<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
  <kap>
    <rad>kofaktor</rad>/o
  </kap>
<drv mrk="kofakt.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc mrk="kofakt.0o.matrico">
    <dif>
      <klr>(de elemento a<sub>ij</sub> en 
      <ref cel="matric.n_p0o">(n,n)-matrico</ref> A)</klr>
      La produto de &gcirc;ia <ref cel="minor.0o.matrico">minoro</ref>
      per (-1)<sup>i+j</sup>:
      <ekz>
        <ref cel="determ.0anto.matrico">determinanto</ref> de matrico
        egalas al la sumo de &ccirc;iuj produtoj de elementoj de unu
        &gcirc;ia vertikalo per la responda <tld/>o.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Kofaktor</trd>
  <trd lng="en">cofactor</trd>
  <trd lng="fr">cofacteur</trd>
  <trd lng="ru">&c_k;&c_o;&c_f;&c_a;&c_k;&c_t;&c_o;&c_r;</trd>
</drv>
</art>

