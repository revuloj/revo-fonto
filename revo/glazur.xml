<vortaro>
  <art mrk="$Id: glazur.xml,v 1.29 2023/11/11 11:36:35 revo Exp $">
 <kap>
   <ofc>2</ofc>
   <rad>glazur</rad>/o
   <fnt><bib>JED</bib></fnt>
 </kap>

<drv mrk="glazur.0o">
  <kap><tld/>o</kap>
  <snc mrk="glazur.0o.TEK">
    <uzo tip="fak">TEK</uzo>
    <dif>
      Vitrigebla protekta &scirc;mirtavolo sur
      <ref cel="cerami.0ajxo">ceramika&jcirc;o</ref>
      (poto, porcelana&jcirc;oj, kahelo ktp):
      <ekz>
        <tld/>o estas ordinare 150&#x202F;&ndash;&#x202F;300&#x202F;&my;m
        dika, fiksita per bakado por igi la ceramika&jcirc;on imuna
        kontra&ubreve; akvo, acidoj kaj alkaloj a&ubreve; por ornamo,
        <tld/>o povas esti kolora a&ubreve; senkolora,
        travidebla a&ubreve; maldiafana;
      </ekz>
      <ekz>
        pendigitaj plata&jcirc;ojn el la plej bona materialo, kiun oni povas fari el argilo,
        &gcirc;i havas brilan <tld/>on sur &gcirc;i, kiu brilas en la sunlumo kvaza&ubreve; vitro
        <fnt>
          <bib>Rob</bib>
          <lok>Parto V</lok>
        </fnt>;
      </ekz>
      <ekz>
        turkis-kolora <tld/>o faras <klr>[la kupolon de <nom>Gur-Emir</nom>]</klr> ege bela vida&jcirc;o
        precipe surfone de la helblua &ccirc;ielo de Samarkando
        <fnt>
          <bib>Monato</bib>
          <aut>Anatoli Ionesov</aut>
          <vrk><url ref="&Monato;/2006/008920.php">Perlo &ccirc;e la Silka Vojo</url></vrk>
          <lok>2006</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[&#x2026;]</klr> helan delikatecon de <tld/>o &parsl; en eterna lazuro &parsl;
        mar-&ccirc;iela
        <fnt>
         <aut>Clelia Conterno Guglielminetti</aut>:
         <vrk>Vivo Retrovita</vrk>,
         <lok>La nica literatura revuo, 3/2</lok>
        </fnt>;
      </ekz>
      <ekz>
        kolkotaro <klr>[&#x2026;]</klr> estis uzata kiel <tld/>o por ceramika&jcirc;oj kaj kiel farbo
        <fnt>
          <bib>Monato</bib>
          <aut>Hori Yasuo</aut>
          <vrk><url ref="&Monato;/2007/009114.php">Vizito al Takaha&scirc;i</url></vrk>
          <lok>2007</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="emajl.0o.TEK">emajlo</ref>
    </refgrp>
    <trd lng="de">Glasur</trd>
    <trd lng="en">glaze</trd>
     <trdgrp lng="es">
     <trd>barniz vitrificable</trd>,
     <trd>barniz v&iacute;treo</trd>
    </trdgrp>
    <trd lng="fr">gla&ccedil;ure</trd>
    <trd lng="hu">f&eacute;nym&aacute;z</trd>
    <trdgrp lng="pl">
      <trd>glazura</trd>,
      <trd>szkliwo</trd>
    </trdgrp>
    <trd lng="pt">esmalte</trd>
  </snc>
  <snc mrk="glazur.0o.KUI">
    <uzo tip="fak">KUI</uzo>
    <dif>
      Suker<ref cel="sirop.0o">siropo</ref> (a&ubreve; grasa&jcirc;o) por ornami dol&ccirc;a&jcirc;ojn, kaj precipe,
      tavolo da tia siropo solidi&gcirc;inta sur baka&jcirc;o,
      fruktoj ktp:
      <ekz>
        la kukon vi <klr>[&#x2026;]</klr> metos sur grandan teleron por plibeligi &gcirc;in per via
        <tld/>o
        <fnt>
          <vrk><url ref="https://esperantojugend.de/de/kune/cxokoladkuko">&Ccirc;okoladkuko</url></vrk>
          <lok>retpa&gcirc;oj de GEJ, 14a de Majo 2019 </lok>
        </fnt>.
      </ekz>
    </dif>
    <trdgrp lng="en">
     <trd>glaze</trd>,
     <trd>icing</trd>,
     <trd>frosting</trd>
    </trdgrp>
    <trdgrp lng="de">
      <trd>Zuckerglasur</trd>,
      <trd>Glasur <klr>(Kuchen)</klr></trd>,
      <trd>&Uuml;berzug <klr>(Glasur)</klr></trd>,
      <trd>Kuvert&uuml;re</trd>
    </trdgrp>
    <trd lng="es">alm&iacute;bar</trd>
    <trd lng="fr">sucre glace</trd>
    <trd lng="hu">cukorm&aacute;z</trd>
    <trdgrp lng="pl">
      <trd>glazura</trd>,
      <trd>polewa</trd>
    </trdgrp>
    <trdgrp lng="zh">
    <trd>&#x7CD6;&#x971C; <pr>t&#xE1;ngshu&#x101;ng</pr></trd>,
    <trd>&#x4E8C;&#x5C42;&#x91C9; <pr>&#xE8;rc&#xE9;ngy&#xF2;u</pr></trd>,
    <trd>&#x91C9; <pr>y&#xF2;u</pr></trd>,
    <trd>&#x8986;&#x51B0; <pr>f&#xF9;b&#x12B;ng</pr></trd>,
    <trd>&#x4E0A;&#x91C9; <pr>sh&#xE0;ngy&#xF2;u</pr></trd>
  </trdgrp>
</snc>
  <trdgrp lng="be">
    <trd>&c_g;&c_l;&c_a;&c_z;&c_u;&c_r;&c_a;</trd>,
    <trd>&c_p;&c_a;&c_l;&c_ib;&c_v;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>glazura</trd>,
    <trd>poleva</trd>,
    <trd>smalt</trd>
  </trdgrp>
  <trd lng="it">glassa</trd>
  <trdgrp lng="ja">
    <trd>&#x3046;&#x308F;&#x3050;&#x3059;&#x308A;</trd>,
    <trd>&#x91C9;&#x85AC;  <pr>&#x3046;&#x308F;&#x3050;&#x3059;&#x308A;</pr></trd>,
    <trd>&#x30B0;&#x30EC;&#x30FC;&#x30BA;</trd>
  </trdgrp>
  <trd lng="nl">glazuur</trd>
  <trd lng="ru">&c_g;&c_l;&c_a;&c_z;&c_u;&c_r;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>glieda</trd>,
    <trd>poleva</trd>
  </trdgrp>
  <trd lng="sv">glasyr</trd>
  <trdgrp lng="uk">
    <trd>&c_p;&c_o;&c_l;&c_i;&c_v;&c_a;</trd>,
    <trd>&c_gu;&c_l;&c_a;&c_z;&c_u;&c_r;</trd>
  </trdgrp>
</drv>

<drv mrk="glazur.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="glazur.0i.sxmiri">
    <dif>
      &Scirc;miri per <tld/>o:
      <ekz>
        <tld/>ita argilo
        <fnt>
          <bib>I&scirc;tar</bib>
          <lok>&Ccirc;apitro VI</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>itaj brikoj
        <fnt>
          <bib>I&scirc;tar</bib>
          <lok>&Ccirc;apitro II</lok>
        </fnt>;
      </ekz>
      <ekz>
	<uzo tip="fak">KUI</uzo>
	<tld/>ita kuko, ka&scirc;tano;
      </ekz>
      <ekz>
        vazoj <klr>[&#x2026;]</klr> majstre prilaboritaj kaj <tld/>itaj
        <fnt>
          <bib>StU</bib>
          <lok>Al Romo</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="emajl.0i">emajli</ref>,
      <ref cel="glace.0igi">glaceigi</ref>
    </refgrp>
    <trdgrp lng="en"><trd>frost</trd>, <trd>glaze</trd>,
    <trd>ice</trd></trdgrp>
    <trd lng="it">smaltare</trd>
  </snc>
  <trdgrp lng="be">
    <trd>&c_g;&c_l;&c_a;&c_z;&c_u;&c_r;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_p;&c_a;&c_l;&c_ib;&c_v;&c_a;&c_c;&c_mol; <klr tip="amb">(&c_r;&c_a;&c_b;&c_ib;&c_c;&c_mol;
        &c_p;&c_a;&c_l;&c_ib;&c_v;&c_u;)</klr></trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>glazovat</trd>,
    <trd>glazurovat</trd>,
    <trd>pol&eacute;vat glazurou</trd>
  </trdgrp>
  <trd lng="de">glasieren</trd>
  <trdgrp lng="es">
    <trd>vidriar</trd>,
    <trd>glasear</trd>,
    <trd>almibarar</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>glacer<klr tip="ind"> (une p&acirc;tisserie)</klr></trd>,
    <trd>enduire de gla&ccedil;ure</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>f&eacute;nym&aacute;zzal bevon</trd>,
    <trd>cukorm&aacute;zzal bevon</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x3046;&#x308F;&#x85AC;&#x3092;&#x304B;&#x3051;&#x308B;  <pr>&#x3046;&#x308F;&#x304F;&#x3059;&#x308A;&#x3092;&#x304B;&#x3051;&#x308B;</pr></trd>,
    <trd>&#x30B0;&#x30EC;&#x30FC;&#x30BA;&#x3092;&#x304B;&#x3051;&#x308B;</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>glazuren</trd>,
    <trd>verglazen</trd></trdgrp>
  <trdgrp lng="pl">
    <trd>glazurowa&cacute;</trd>,
    <trd>szkliwi&cacute;</trd>,
    <trd>polewa&cacute;<klr> (naczynia)</klr></trd>
  </trdgrp>
  <trd lng="ru">
      &c_g;&c_l;&c_a;&c_z;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trd lng="sk">glaz&uacute;rova&tcaron;</trd>
  <trdgrp lng="uk">
    <trd>&c_p;&c_o;&c_l;&c_i;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_gu;&c_l;&c_a;&c_z;&c_u;&c_r;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_p;&c_o;&c_k;&c_r;&c_i;&c_v;&c_a;&c_t;&c_i; &c_gu;&c_l;&c_a;&c_z;&c_u;&c_r;&#x2019;&c_ju;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x9472;&#x73BB;&#x7483; <pr>xi&#x101;ngb&#x14D;li</pr></trd>,
    <trd>&#x5857;&#x91C9; <pr>t&#xFA;y&#xF2;u</pr></trd>
  </trdgrp>
</drv>

