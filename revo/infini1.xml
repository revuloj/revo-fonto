<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>infinitezim</rad>/o
</kap>
<drv mrk="infini1.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Tuto de la tre malgrandaj korpuskloj:
      <ekz>
        kondukis min al biologiaj studoj mia gusto por la <tld/>o.
      </ekz>
    </dif>
    <adm>
      Mi deziris iom klarigi la anta&ubreve;an redakton "senlima malgrando".
      La ekzemplo estas elpensita. Necesus trovi pli bonan.
      <aut>MB</aut>
    </adm>
    <trdgrp lng="hu">
      <trd>v&eacute;gtelen&uuml;l kis mennyis&eacute;g</trd>,
      <trd>par&aacute;ny</trd>
    </trdgrp>
    <trd lng="nl">oneindige kleinheid</trd>
  </snc>
  <snc mrk="infini1.0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>MatTerm</bib><lok>p. 18</lok></fnt>
    <dif>
      <klr>(en &ccirc;irka&ubreve;a&jcirc;o de reelo <frm><k>a</k></frm>)</klr>
      <ref tip="super" cel="funkci.0o.MAT">Funkcio</ref>, kies
      <ref cel="limes.0o.bildigo">limeso</ref> &ccirc;e <frm><k>a</k></frm> 
      estas nulo.
    </dif>
    <trd lng="hu">infinitezim&aacute;lis</trd>
  </snc>
  <refgrp tip="vid">
    <ref cel="infini.0o.MAT">infinito</ref>.
  </refgrp>
  <trd lng="be">&c_b;&c_ja;&c_s;&c_k;&c_o;&c_n;&c_c;&c_a; &c_m;&c_a;&c_l;&c_a;&c_ja;
  <ind>&c_v;&c_je;&c_l;&c_ib;&c_ch;&c_y;&c_n;&c_ja;</ind></trd>
  <trd lng="de">unendlich kleine <ind>Gr&ouml;&szlig;e</ind></trd>
  <trd lng="en">infinitesimal</trd>
  <trd lng="fr">infiniment <ind>petit</ind><klr tip="ind">
  (subst.)</klr></trd>
  <trd lng="pl">niesko&nacute;czenie <ind>ma&lstroke;y</ind></trd>
  <trd lng="pt">infinit&eacute;simo <klr tip="amb">(mat.)</klr></trd>
  <trd lng="ru">&c_b;&c_je;&c_s;&c_k;&c_o;&c_n;&c_je;&c_ch;&c_n;&c_o; <ind>&c_m;&c_a;&c_l;&c_a;&c_ja;</ind>
  &c_v;&c_je;&c_l;&c_i;&c_ch;&c_i;&c_n;&c_a;</trd>
  <trdgrp lng="sk">
    <trd>nekonečno</trd>,
    <trd>neobmedzenosť</trd>
  </trdgrp>
</drv>

<drv mrk="infini1.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Rilata al <tld/>oj; senlime malgranda:
      <ekz>
        <ref cel="kalkul.infinitezima0o"><tld/>a kalkulo</ref>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_ja;&c_s;&c_k;&c_o;&c_n;&c_c;&c_a; &c_m;&c_a;&c_l;&c_y;</trd>
  <trd lng="de">infinitesimal</trd>
  <trd lng="en">infinitesimal</trd>
  <trd lng="fr">infinit&eacute;simal</trd>
  <trdgrp lng="hu">
    <trd>v&eacute;gtelen&uuml;l kicsi</trd>,
    <trd>par&aacute;nyi</trd>,
    <trd>infinitezim&aacute;lis</trd>,
  </trdgrp>
  <trd lng="nl">infinitesimaal</trd>
  <trd lng="pl">infinitezymalny</trd>
  <trd lng="ru">&c_b;&c_je;&c_s;&c_k;&c_o;&c_n;&c_je;&c_ch;&c_n;&c_o; &c_m;&c_a;&c_l;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>infinitezimálny</trd>,
    <trd>nekonečný</trd>
  </trdgrp>
</drv>

<drv mrk="infini1.cxef0o">
  <kap>&ccirc;ef<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 18</lok></fnt>
  <snc>
    <dif>
      <klr>(en &ccirc;irka&ubreve;a&jcirc;o de reelo <frm><k>a</k></frm>)</klr>
      Konvencie elektita <ref tip="super"
      cel="infini1.0o.MAT"><tld/>o</ref> 
      <frm><k>f</k></frm>, al kiu oni komparas aliajn <tld/>ojn
      <frm><k>g</k></frm> &ccirc;e la sama punkto, studante
      la limeson de
      <frm><k>g</k>(<k>x</k>)/[<k>f</k>(<k>x</k>)]<sup><k>n</k></sup></frm>:
      <ekz>
        <frm>(<k>x</k>-<k>a</k>)<sup>3</sup></frm> estas triaorda
        <tld/>o 
        rilate al &ccirc;ef<tld/>o <frm>(<k>x</k>-<k>a</k>)</frm>;
      </ekz>
      <ekz>
        elvolvu funkcion <frm><k>f</k></frm> &gcirc;is la kvara ordo en 
        &ccirc;irka&ubreve;a&jcirc;o de <frm>1</frm>, uzante 
        <frm>log(<k>x</k>)</frm> kiel &ccirc;ef<tld/>on.
      </ekz>
    </dif>
    <ref tip="vid" cel="ord.0o.infinitezimo">ordo.</ref>
  </snc>
  <trd lng="fr">infiniment petit principal</trd>
  <trd lng="hu">f&odblac;infinitezim&aacute;lis</trd>
</drv>
</art>
