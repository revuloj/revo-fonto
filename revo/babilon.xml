<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap><rad>Babilon</rad>/o</kap>
<drv mrk="babilon.0o">
  <kap><tld/>o<fnt>Z</fnt></kap>
  <uzo tip="fak">HIS</uzo>
  <snc>
    <dif>
      La plej granda <ref tip="super" cel="urb.0o">urbo</ref> de la antikva
      <ref tip="malprt" cel="mezopotami.0o">Mezopotamio</ref>,
      &ccirc;e <ref cel="euxfrat.0o">E&ubreve;frato</ref>, proks. 300 km
      anta&ubreve; ties kunflui&gcirc;o kun Tigriso (44&ring;25&#8242;E,
      32&ring;35&#8242;N) kaj la &ccirc;efurbo de
      <ref tip="sin" cel="babiloni.0o">Babilonio</ref>:
      <ekz>
        kiu ne renkontis ofte en sia vivo homojn, kiuj ploras
        super la riveroj de <tld/>o, &ccirc;irka&ubreve;fluantaj la ruinojn
        de ilia perdita bonstato?
        <fnt><bib>Marta</bib></fnt>;
      </ekz>
      <ekz>
        &Ccirc;e la river' de <tld/>o
        Ni sidis kaj amare ploris,
        Kiam ni tie pri Ciono
        Kun afliktita kor' memoris
        <fnt>
        <aut>tr. K. Kalocsay</aut>: <vrk>Ps. 137.</vrk>
        <lok>Tutmonda Sonoro, I:55.</lok></fnt>;
      </ekz>
      <ekz>
        la <ind><tld lit="b"/>a Talmudo</ind>.
        <trd
        lng="ru">&c_v;&c_a;&c_v;&c_i;&c_l;&c_o;&c_n;&c_s;&c_k;&c_i;&c_j;
        &c_T;&c_a;&c_l;&c_m;&c_u;&c_d;</trd>
      </ekz>
    </dif>
    <ref tip="sin" cel="babel.0o">Babelo</ref>
  </snc>
  <trd lng="de">Babylon</trd>
  <trd lng="en">Babylon</trd>
  <trd lng="hu">Babilon</trd>
  <trd lng="nl">Babylon</trd>
  <trd lng="ru">&c_V;&c_a;&c_v;&c_i;&c_l;&c_o;&c_n;</trd>
  <trd lng="sk">Babylon</trd>
</drv>
</art>
