<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: ekskuz.xml,v 1.31 2024/08/12 06:34:26 revo Exp $">
<kap>
  <rad>ekskuz</rad>/i <fnt><bib>PV</bib></fnt>,
  <var><kap><rad var="sk">eskuz</rad>/i <fnt><bib>PV</bib></fnt></kap></var>
</kap>
<drv mrk="ekskuz.0i">
  <kap><tld/>i, <var><kap><tld var="sk"/>i</kap></var></kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="ekskuz.0i.prezenti">
    <dif>
      Prezenti motivon a&ubreve; <ref tip="prt" cel="pretek.0o">preteksto</ref>n
      por <ref cel="kulp.sen0igi.pardonpeti">senkulpigi</ref> iun a&ubreve; malpligravigi la ripro&ccirc;ata&jcirc;on:
      <ekz>
        la &ccirc;efo anka&ubreve; ne gratulis vin, malgra&ubreve; lerta &scirc;ajn-<tld/>'
        <fnt>
          <aut>Raymond Schwartz</aut>
          <vrk><url ref="&Steloj;butiko">La Stranga Butiko</url></vrk>
          <lok>Nigra Tago</lok>
        </fnt>;
      </ekz>
      <ekz>
        li nur nun rimarkas sian &leftquot;eraron&rightquot;, kaj kiel
        eble plej humile sin <tld var="sk"/>is
        <fnt>
          <aut>Milo&scirc; Luka&scirc;</aut>,
          <vrk><url ref="http://donh.best.vwh.net/Esperanto/Literaturo/Revuoj/nlr/nlr55/lerteco.html">Lerteco
          sor&ccirc;on ne bezonas</url></vrk>,
          <lok>Nica Literatura Revuo, 1960-05 &gcirc;is 06, numero 5/5, p.
          177a-179a</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="pretek.0i">preteksti</ref>
    <refgrp tip="vid">
      <ref cel="pardon.0peti">pardonpeti</ref>,
      <ref cel="prav.0igi">pravigi</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_a;&c_p;&c_r;&c_a;&c_w;&c_d;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trdgrp lng="ca">
    <trd>excusar</trd>,
    <trd>disculpar</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>omluvit</trd>,
    <trd>ospravedlnit</trd>,
    <trd>vysv&ecaron;tlit</trd>
  </trdgrp>
  <trd lng="de">entschuldigen</trd>
  <trd lng="en">to excuse</trd>
  <trd lng="es">excusar</trd>
  <trd lng="fr">excuser</trd>
  <trdgrp lng="he">
    <trd>&lamed;&he;&tsadi;&dalet;&yod;&qof;</trd>,
    <trd>&lamed;&he;&tav;&nun;&tsadi;&lamed;</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>kiment</trd>,
    <trd>menteget</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#24321;&#35299;&#12377;&#12427;  <pr>&#12409;&#12435;&#12363;&#12356;&#12377;&#12427;</pr></trd>,
    <trd>&#35328;&#35379;&#12434;&#12377;&#12427;  <pr>&#12356;&#12356;&#12431;&#12369;&#12434;&#12377;&#12427;</pr></trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>t&lstroke;umaczy&cacute;<klr> (kogo&sacute; z
    czego&sacute;)</klr></trd>,
    <trd>usprawiedliwia&cacute;</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>excusar</trd>,
    <trd>desculpar</trd>
  </trdgrp>
  <trd lng="ru">&c_o;&c_p;&c_r;&c_a;&c_v;&c_d;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>ospravedlni&tcaron;</trd>,
    <trd>vysvetli&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_v;&c_i;&c_b;&c_a;&c_ch;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_b;&c_a;&c_ch;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_shch;&c_a;&c_t;&c_i;</trd>
  </trdgrp>
  <trd lng="zh">&#27465; <pr>qi&agrave;n</pr></trd>
</drv>

<drv mrk="ekskuz.0o">
  <kap><tld/>o, <var><kap><tld var="sk"/>o</kap></var></kap>
  <snc mrk="ekskuz.0o.motivo">
    <dif>
      Motivo a&ubreve; <ref tip="sub" cel="pretek.0o">preteksto</ref>
      por senkulpigi iun a&ubreve; malpligravigi la kulpon:
      <ekz>
        prezenti efektivan <tld/>on;
      </ekz>
      <ekz>
        bonvolu akcepti niajn <tld/>ojn;
      </ekz>
      <ekz>
        lama kaj senbaza <tld/>o
        <fnt>
          <vrk><url ref="&CRI;2521/2018/04/12/179s198475.htm">china radio international</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        kun <tld/>o sen <tld/>o Kristnasko alproksimi&gcirc;as
        <fnt>
          <vrk><url ref="https://www.liberafolio.org/arkivo/www.liberafolio.org/2005/aperis/stenkristnasko.html"
              >Kristnaska novelo kun du ekskuzoj &mdash; Libera Folio</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        <esc>bovicduonekskuzo</esc>
        <fnt>
          <vrk><url ref="https://www.liberafolio.org/arkivo/www.liberafolio.org/2005/aperis/stenkristnasko.html"
              >Kristnaska novelo kun du ekskuzoj &mdash; Libera Folio</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="pretek.0o">preteksto</ref>
    <ref tip="vid" cel="alibi.0o">alibio</ref>
  </snc>
  <trd lng="be">&c_a;&c_p;&c_r;&c_a;&c_w;&c_d;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>
  <trdgrp lng="ca">
    <trd>excusa</trd>,
    <trd>subterfugi</trd>,
    <trd>pretext</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>omluva</trd>,
    <trd>v&yacute;mluva</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Entschuldigung</trd>,
    <trd>Entschuldigungsgrund</trd>
  </trdgrp>
  <trd lng="en">excuse</trd>
  <trdgrp lng="es">
    <trd>excusa</trd>,
    <trd>pretexto</trd>
  </trdgrp>
  <trd lng="fr">excuse</trd>
  <trd lng="he">&samekh;&he;&tav;&nun;&tsadi;&lamed;&vav;&tav;</trd>
  <trdgrp lng="hu">
    <trd>ments&eacute;g</trd>,
    <trd>indok<klr tip="ind"> (ments&eacute;g)</klr></trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#24321;&#35299;  <pr>&#12409;&#12435;&#12363;&#12356;</pr></trd>,
    <trd>&#24321;&#26126;  <pr>&#12409;&#12435;&#12417;&#12356;</pr></trd>,
    <trd>&#35328;&#35379;  <pr>&#12356;&#12356;&#12431;&#12369;</pr></trd>,
    <trd>&#21475;&#23455;  <pr>&#12371;&#12358;&#12376;&#12388;</pr></trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>wyt&lstroke;umaczenie</trd>,
    <trd>usprawiedliwienie</trd>
  </trdgrp>
  <trd lng="ru">&c_o;&c_p;&c_r;&c_a;&c_v;&c_d;&c_a;&c_n;&c_i;&c_je;</trd>
  <trd lng="sk">ospravedlnenie</trd>
  <trd lng="uk">&c_p;&c_r;&c_o;&c_shch;&c_je;&c_n;&c_n;&c_ja;</trd>
  <trdgrp lng="zh">
    <trd>&#25265;&#27465; <pr>b&agrave;oqi&agrave;n</pr></trd>,
    <trd>&#21407;&#35538; <pr>yu&aacute;nli&agrave;ng</pr></trd>
  </trdgrp>
</drv>
</art>
