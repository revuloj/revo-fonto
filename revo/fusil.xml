<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: fusil.xml,v 1.24 2025/12/15 20:39:38 revo Exp $">
<kap>
  <rad>fusil</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="fusil.0o">
  <kap><tld/>o</kap>
  <snc mrk="fusil.0o.ARM">
    <dif>
      Portebla <ref tip="super" cel="paf.pulvo0ilo">pulvopafilo</ref>,
      konsistanta el ligna <ref tip="prt" cel="kolb.0o">kolbo</ref>
      kaj &scirc;tala <ref tip="prt" cel="tub.0o">tubo</ref>,
      pli longa ol tiu de <ref cel="karabe.0o">karabeno</ref>:
      <ekz>
        leonoj ne staras &ccirc;e la sama loko dum la &ccirc;asisto reiras hejmen por havigi <tld/>on
        <fnt>
          <bib>KKl</bib>
          <lok>&Ccirc;apitro 8</lok>
        </fnt>;
      </ekz>
      <ekz>
        oni sendos vin kun <tld/>oj en la manoj kontra&ubreve; viaj sovetiaj fratoj
        <fnt>
          <bib>Metrop</bib>
        </fnt>!
      </ekz>
      <ekz>
        videblis la akraj linioj de la ru&gcirc;aj domoj de la cara <tld/>faktorio
        <fnt>
          <bib>Voja&gcirc;Imp</bib>
          <lok>&Ccirc;e Lev Tolstoj en Jasnaja Poljana</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[ili]</klr> bone konas la &ccirc;asarmilojn, malpezajn mitralojn, <tld/>ojn,
        plumberpafilojn kaj aerpafilojn
        <fnt>
          <bib>Monato</bib>
          <aut>Saliko</aut>
          <vrk><url ref="&Monato;/2013/011065.php">&Ccirc;asado</url></vrk>
          <lok>2013</lok>
        </fnt>;
      </ekz>
      <ekz>
        kun surmetita bajoneto, kaj la <tld/>o &ccirc;epiede
        <fnt>
          <bib>Mortul&Scirc;ip</bib>
          <lok>&Ccirc;apitro 14</lok>
        </fnt>;
      </ekz>
      <ekz>
        kun fumanta <tld/>o enmane
        <fnt>
          <bib>KrB</bib>
          <lok>En sia korto &ccirc;iu kok&#8217; estas forta</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="karabe.0o">karabeno</ref>,
      <ref cel="paf.0ilo.fusilo">pafilo<sncref/></ref>
    </refgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_t;&c_r;&c_e;&c_l;&c_mol;&c_b;&c_a;</trd>,
    <trd>&c_v;&c_ib;&c_n;&c_t;&c_o;&c_w;&c_k;&c_a;</trd>,
    <trd>&c_r;&c_u;&c_zh;&c_zh;&c_o;</trd>
  </trdgrp>
  <trd lng="ca">fusell</trd>
  <trdgrp lng="cs">
    <trd>flinta</trd>,
    <trd>pu&scaron;ka</trd>,
    <trd>ru&ccaron;nice</trd>
  </trdgrp>
  <trdgrp lng="de">
     <trd>Flinte</trd>,
     <trd>B&uuml;chse</trd></trdgrp>
  <trd lng="en">rifle</trd>
  <trd lng="es">fusil</trd>
  <trd lng="fr">fusil</trd>
  <trd lng="hu">puska</trd>
  <trd lng="it">fucile</trd>
  <trd lng="ja">&#23567;&#37507;  <pr>&#12375;&#12423;&#12358;&#12376;&#12421;&#12358;</pr></trd>
  <trdgrp lng="nl">
     <trd>geweer</trd>,
     <trd>buks</trd>,
     <trd>jachtgeweer</trd>
  </trdgrp>
  <trd lng="pl">karabin</trd>
  <trd lng="pt">fuzil</trd>
  <trd lng="ro">pu&#537;c&abreve;</trd>
  <trdgrp lng="ru">
    <trd>&c_r;&c_u;&c_zh;&c_mol;&c_jo;</trd>,
    <trd>&c_v;&c_i;&c_n;&c_t;&c_o;&c_v;&c_k;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>flinta</trd>,
    <trd>pu&scaron;ka</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_f;&c_u;&c_z;&c_ib;&c_ja;</trd>,
    <trd>&c_f;&c_u;&c_z;&c_je;&c_ja;</trd>,
    <trd>&c_l;&c_je;&c_g;&c_k;&c_i;&c_j; &c_m;&c_u;&c_sh;&c_k;&c_je;&c_t;</trd>,
    <trd>&c_r;&c_u;&c_sh;&c_n;&c_i;&c_c;&c_ja;</trd>,
    <trd>&c_gu;&c_v;&c_i;&c_n;&c_t;&c_ib;&c_v;&c_k;&c_a;</trd>
  </trdgrp>
</drv>

<drv mrk="fusil.0isto">
  <kap><tld/>isto</kap>
  <snc mrk="fusil.0isto.MIL">
    <uzo tip="fak">MIL</uzo>
    <dif>
      <ref tip="super" cel="soldat.0o.militisto">Soldato</ref>, armita per <tld/>o;
      <ref tip="sin" cel="fuzili.0o">fuziliero</ref>:
      <ekz>
        lian vo&ccirc;on superbruas la salvo de la <tld/>istoj
        <fnt>
          <aut>G. G&aacute;rdonyi, trad. J. Horvath</aut>
          <vrk><url ref="http://vortaro.hu/stelspec.pdf">
          Steloj de Eger</url></vrk>
          <lok>2012</lok>
        </fnt>;
      </ekz>
      <ekz>
        la 10a <tld/>ista divizio
        <fnt>
          <bib>LOdE</bib>
          <lok>2000, No 7 (69)</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_t;&c_r;&c_a;&c_l;&c_o;&c_k;</trd>
  <trd lng="ca">fuseller</trd>
  <trd lng="cs">st&rcaron;elec z pu&scaron;ky</trd>
  <trdgrp lng="de">
     <trd>Sch&uuml;tze</trd>,
     <trd>F&uuml;silier</trd></trdgrp>
  <trdgrp lng="en">
     <trd>rifleman</trd>
  </trdgrp>
  <trd lng="fr">fusilier</trd>
  <trdgrp lng="hu">
     <trd>pusk&aacute;s</trd>,
     <trd>l&ouml;v&eacute;sz</trd></trdgrp>
  <trd lng="it">fuciliere</trd>
  <trdgrp lng="ja">
    <trd>&#23567;&#37507;&#25163;  <pr>&#12375;&#12423;&#12358;&#12376;&#12421;&#12358;&#12390;</pr></trd>,
    <trd>&#23556;&#25731;&#20853;  <pr>&#12375;&#12419;&#12370;&#12365;&#12408;&#12356;</pr></trd>
  </trdgrp>
  <trd lng="nl">schutter<klr tip="ind"> (met geweer)</klr></trd>
  <trd lng="pt">fuzileiro</trd>
  <trd lng="pl">fizylier</trd>
  <trd lng="ru">&c_s;&c_t;&c_r;&c_je;&c_l;&c_o;&c_k;</trd>
  <trd lng="sk">flintou ozbrojen&yacute; vojak</trd>
  <trdgrp lng="uk">
    <trd>&c_s;&c_t;&c_r;&c_ib;&c_l;&c_je;&c_c;&c_mol;</trd>,
    <trd>&c_f;&c_u;&c_z;&c_i;&c_l;&c_je;&c_r;</trd>
  </trdgrp>
</drv>
</art>

