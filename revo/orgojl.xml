<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>orgojl</rad>/o
</kap>
<drv mrk="orgojl.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Granda sento de mem&scirc;ato, ofte akompanata de mal&scirc;ato de la aliaj:
      <ekz>
        talentaj &ccirc;iuj kvar estas, tamen iom da <tld/>o ne estas fremda al
        la pli junaj<fnt><aut>Christian Declerck</aut>: <vrk>Dua kvaropo,
        sproniva kiel la unua</vrk>, <bib>Monato</bib><lok>jaro 1994a,
        numero 4a, p. 22a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Hochmut</trd>,
    <trd>D&uuml;nkel</trd>,
    <trd>&Uuml;berheblichkeit</trd>,
    <trd>Hochn&auml;sigkeit</trd>
  </trdgrp>
  <trd lng="en">arrogance</trd>
  <trdgrp lng="fr">
    <trd>fatuit&eacute;</trd>,
    <trd>orgueil</trd>,
    <trd>suffisance</trd>,
    <trd>vanit&eacute;</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>g&odblac;g</trd>,
    <trd>d&ouml;lyf</trd>,
    <trd>fennh&eacute;j&aacute;z&aacute;s</trd>,
    <trd>&ouml;ntelts&eacute;g</trd>
  </trdgrp>
  <trdgrp lng="lat">
    <trd>fastus, us</trd>,
    <trd>ferocia, ae</trd>,
    <trd>superbia, ae</trd>
  </trdgrp>
  <trd lng="nl">hoogmoed</trd>
  <trdgrp lng="pt">
    <trd>orgulho</trd>,
    <trd>soberba</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_n;&c_a;&c_d;&c_m;&c_je;&c_n;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_s;&c_p;&c_je;&c_s;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="orgojl.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Sentanta grandan memestimon.
    </dif>
  </snc>
  <refgrp tip="vid">
    <ref cel="arogan.0a">aroganta</ref>
    <ref cel="impert.0a">impertinenta</ref>
    <ref cel="humil.mal0a">malhumila</ref>,
  </refgrp>
  <trdgrp lng="fr">
    <trd>fat</trd>,
    <trd>fier<klr> (de soi)</klr></trd>,
    <trd>orgueilleux</trd>,
    <trd>vaniteux</trd>
  </trdgrp>
</drv>

<drv mrk="orgojl.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Senti troan memfieron:
      <ekz>
        mi, kiel aliaj &leftquot;bonaj a&ubreve;toroj&rightquot; (la
        citiloj malhelpas, ke mi tro <tld/>u), reagos paranoje
        <fnt><aut>Trevor Steele</aut>: <vrk>Paranoja reago
        (1)</vrk>, <bib>Monato</bib><lok>jaro 2001a, numero 4a, p.
        4a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>s'<ind>infatuer</ind><klr> (de soi)</klr></trd>
  </trdgrp>
</drv>
</art>
