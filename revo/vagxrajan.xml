<art mrk="$Id: vagxrajan.xml,v 1.8 2024/04/13 22:21:53 revo Exp $">
<kap>
  <rad>Va&gcirc;rajan</rad>/o <fnt><bib>NePiv</bib></fnt>
</kap>
<drv mrk="vagxrajan.0o">
  <kap><tld/>o</kap>
  <snc mrk="vagxrajan.0o.BUD">
    <uzo tip="fak">BUD</uzo>
    <dif>
      Precipe tibeta bran&ccirc;o de <ref tip="malprt"
      cel="buda.0ismo.BUD">budaismo</ref> kun esotera instruo
      kaj ampleksa kulto al bodisatvoj kaj dioj:
      <ekz>
        temas <klr>...</klr> pri la tri veturiloj de la <klr>...</klr>
        budhismo, do pri la hinajano, la mahajano kaj la <tld lit="v"/>o
        <fnt>
          <aut>H. Frank</aut>,
          <vrk>La Akademio Internacia de la Sciencoj San Marino,
          <url
          ref="http://wwwcs.uni-paderborn.de/extern/fb/2/Kyb.Paed/IKP/aisl/parto4.html">Parto
          4</url></vrk>,
          <lok>2002</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_v;&c_a;&c_d;&c_zh;&c_r;&c_a;&c_ja;&c_n;&c_a;</trd>
  <trd lng="bo">&t_ra;&t_data;&t_naro;&t_tsheg;&t_ra;&t_jata;&t_drengbu;&t_tsheg;&t_tha;&t_drengbu;&t_ga;&t_tsheg;&t_pa;&t_tsheg;</trd>
  <trd lng="en">Vajrayana</trd>
  <trd lng="ca">Vajray&amacron;na</trd>
  <trd lng="de">Vajrayana</trd>
  <trd lng="fr">Vajray&acirc;na</trd>
  <trd lng="hu">vadzsr&aacute;j&aacute;na</trd>
  <trd lng="it">Vajray&amacron;na</trd>
  <trd lng="pl">Wad&zdot;rajana</trd>
</drv>

<drv mrk="vagxrajan.0a">
  <kap><tld lit="v"/>a</kap>
  <snc mrk="vagxrajan.0a.BUD">
    <dif>
      Apartenanta al <tld/>o, al &gcirc;ia doktrino:
      <ekz>
        anoj de &ccirc;iuj tri skoloj de Budhismo (Teravada, Mahajana kaj
        <tld/>a) praktikas sian kredon
        <fnt>
          <aut>Tulsi &Ccirc;aran &Ccirc;hu&gcirc;u</aut>,
          <vrk><url
          ref="http://www.sakarikauppinen.com/nepal/nepfakt.html">Konati&gcirc;u
          kun Nepalo</url></vrk>,
          <lok>2000-03-12</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="ca">vajray&agrave;nic</trd>
  <trdgrp lng="de">
    <trd>vajrayanisch</trd>,
    <trd>Vajrayana-</trd>
  </trdgrp>
  <trd lng="pl">dotyczy <ind>Wad&zdot;rajany</ind></trd>
</drv>
</art>

