    <trd>&#x5B89;&#20840;&#22320;&#x5E36; <pr>&amacron;nqu&#xE1;nd&#xEC;d&#xE0;i</pr></trd>,
    <trd>&#24944;&#x7C4D;&#22320; <pr>w&#xE8;ij&#xED;de</pr></trd>,
    <trd>&#x5B89;&#20840;&#30340;&#22320;&#x65B9; <pr>&amacron;nqu&#xE1;nded&#xEC;fang</pr></trd>,
    <trd>&#x6E2F;&#x6E7E; <pr>g&#x1CE;ngw&amacron;n</pr></trd>,
    <trd>&#x6E2F;&#28771; <pr>g&#x1CE;ngw&amacron;n</pr></trd>,
    <trd>&#x853D;&#x8EAB;&#22788; <pr>b&#xEC;sh&emacron;nch&#xF9;</pr></trd>,
    <trd>&#x853D;&#x8EAB;&#34389; <pr>b&#xEC;sh&emacron;nch&#xF9;</pr></trd>,
    <trd>&#x4E34;&#x65F6;&#x907F;&#x96BE;&#25152; <pr>l&#xED;nsh&#xED;b&#xEC;n&#xE1;nsu&#x1D2;</pr></trd>,
    <trd>&#x81E8;&#26178;&#x907F;&#x96E3;&#25152; <pr>l&#xED;nsh&#xED;b&#xEC;n&#xE1;nsu&#x1D2;</pr></trd>
  </trdgrp>
