<drv mrk="rifugx.0o">
  <kap><tld/>o</kap>
  <snc mrk="rifugx.0o.KOMUNE">
    <dif>
      &Scirc;irmo, helpo kiun ricevas forkurinto:
      <ekz>
        la karavano alproksimi&gcirc;as al la urbeto, kiu donis al li <tld/>on
        <fnt>
          <bib>Fab3</bib>
          <lok>Dorna vojo de la honoro</lok>
        </fnt>;
      </ekz><ekz>
        <uzo tip="stl">FIG</uzo>
        lasu min <klr>[&#x2026;]</klr> havi <tld/>on sub la kovro de Viaj
        flugiloj
        <fnt>
          <bib>MT</bib>
          <lok>Psalmaro 61:4</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Zuflucht</trd>
  <trd lng="es">refugio</trd>
  <trd lng="fr">refuge<klr> (protection)</klr></trd>
  <trd lng="hu">mened&eacute;k</trd>
  <trdgrp lng="ja">
    <trd>&#x4FDD;&#x8B77;  <pr>&#x307B;&#x3054;</pr></trd>,
    <trd>&#x5E87;&#x8B77;  <pr>&#x3072;&#x3054;</pr></trd>
  </trdgrp>
  <trd lng="pl">schronienie</trd> 
  <trd lng="ru">&c_u;&c_b;&c_je;&c_zh;&c_i;&c_shch;&c_je;<klr tip="amb"> (&c_z;&c_a;&c_shch;&c_i;&c_t;&c_a;)</klr></trd>
