    <trd>&#x4EA1;&#x547D;&#x8005;  <pr>&#x307C;&#x3046;&#x3081;&#x3044;&#x3057;&#x3083;</pr></trd>
  </trdgrp>
  <trd lng="pl">uchod&zacute;ca</trd> 
  <trd lng="ru">&c_b;&c_je;&c_zh;&c_je;&c_n;&c_je;&c_c;</trd>
