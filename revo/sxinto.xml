<art mrk="$Id: sxinto.xml,v 1.19 2024/03/25 07:28:39 revo Exp $">
<kap>
  <rad>&scirc;intoism</rad>/o
</kap>
<drv mrk="sxinto.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">REL</uzo>
  <snc>
    <dif>
      Indi&gcirc;ene japana <ref tip="lst" cel="religi.0o.REL" lst="voko:religioj">religio</ref>
      plurdia, kultanta natura&jcirc;ojn, spiritojn, heroojn:
      <ekz>
        multaj japanoj estas samtempe kredantoj de budhismo kaj de <tld/>o
        <fnt>
          <bib>Monato</bib>
          <aut>Hori Yasuo</aut>
          <vrk><url ref="&Monato;/2008/009633.php">Religio en Japanio. &Ccirc;u budhismo?</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        en preska&ubreve; &ccirc;iuj distriktoj ekzistas <tld/>a templo
        <fnt>
          <bib>Monato</bib>
          <aut>Hori Yasuo</aut>
          <vrk><url ref="&Monato;/2008/009633.php">Religio en Japanio. &Ccirc;u budhismo?</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        dum jarcentoj <nom>Kongo-Gumi</nom> ekskluzive konstruis kaj riparis 
        <nom>&Scirc;itenno&jcirc;i</nom>, &gcirc;is en la
        1860aj jaroj &gcirc;i komencis konstrui templojn kaj sanktejojn de <tld/>o
        <fnt>
          <bib>Monato</bib>
          <aut>Isikawa Takasi</aut>
          <vrk><url ref="&Monato;/2013/010932.php">Adapti, persisti, akcepti</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="sxinto1.0o">&scirc;intoo</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_s;&c_ib;&c_n;&c_t;&c_a;&c_ib;&c_z;&c_m;</trd>
  <trd lng="de">Schintoismus</trd>
  <trd lng="en">Shintoism</trd>
  <trdgrp lng="fr">
    <trd>shint&ocirc;</trd>,
    <trd>shinto&iuml;sme</trd>
  </trdgrp>
  <trd lng="hu">sintoizmus</trd>
  <trdgrp lng="it">
    <trd>scintoismo</trd>,
    <trd>shintoismo</trd>, 
    <trd>shinto</trd>
  </trdgrp>
  <trd lng="nl">sjinto&iuml;sme</trd>
  <trdgrp lng="pl">
    <trd>szintoism</trd>,
    <trd>sintoizm</trd>,
    <trd>shintoizm</trd>
  </trdgrp>
  <trd lng="pt">xintoismo</trd>
  <trd lng="ru">&c_s;&c_i;&c_n;&c_t;&c_o;&c_i;&c_z;&c_m;</trd>
  <trd lng="zh">&#x795E;&#x9053;&#x6559; <pr>sh&#xE9;nd&#xE0;oji&#xE0;o</pr></trd>
</drv>
