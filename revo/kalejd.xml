<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: kalejd.xml,v 1.23 2019/10/12 13:10:17 revo Exp $">
<kap>
   <ofc>2</ofc>
   <rad>kalejdoskop</rad>/o
</kap>

<drv mrk="kalejd.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">SPO</uzo>
  <snc mrk="kalejd.0o.optika">
    <dif>
      Optika aparato, enhavanta tri spegulojn kaj multajn
      diverskolorajn vitropecetojn, donanta simetriajn bildojn, kiuj 
      &scirc;an&gcirc;i&gcirc;as je &ccirc;iu moveto de la aparato:
      <ekz>
        &scirc;an&gcirc;i&gcirc;o de bildoj kaj pensoj, kvaza&ubreve; <tld/>o
        <fnt>
          <vrk><url ref="http://www.ipernity.com/blog/stanislavo-belov/1580050"
              >ipernity: Geografio de miaj rememoroj: le&gcirc;era kaj fajna ...</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la metodo intervjui civitanojn el la diversaj partoj de Belgio &scirc;ajnas al mi tute
        ta&ubreve;ga kaj donas <tld/>on de almena&ubreve; dek du opinioj
        <fnt>
          <bib>Monato</bib>
          <aut>Marc Demonty</aut>
          <vrk><url ref="https://www.monato.be/2007/009368.php"
              >&Ccirc;u Flandrio kaj Valonio divorcu? (2)</url></vrk>
          <lok>2007</lok>
        </fnt>;
      </ekz>
      <ekz>
        la vivo estas <tld/>o
        <fnt>
          <vrk><url ref="https://rosejo.blogspot.com/2014/"
              >La vivo estas kalejdoskopo!</url></vrk>
          <lok> rosejo.blogspot.com</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="panoptik.0o">panoptiko</ref>,
      <ref cel="paletr.0o.figure">paletro<sncref/></ref>,
      <ref cel="gam.0o.FIG">gamo<sncref/></ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_l;&c_je;&c_j;&c_d;&c_a;&c_s;&c_k;&c_o;&c_p;</trd>
  <trd lng="ca">calidoscopi</trd>
  <trdgrp lng="cs">
    <trd>kaleidoskop</trd>,
    <trd>kr&aacute;snohled</trd>
  </trdgrp>
  <trd lng="de">Kaleidoskop</trd>
  <trd lng="en">kaleidoscope</trd>
  <trd lng="es">caleidoscopio</trd>
  <trd lng="fi">kaleidoskooppi</trd>
  <trd lng="fr">kal&eacute;idoscope</trd>
  <trd lng="hu">kaleidoszk&oacute;p</trd>
  <trd lng="nl">caleidoscoop</trd>
  <trd lng="pl">kalejdoskop</trd>
  <trd lng="ru">&c_k;&c_a;&c_l;&c_je;&c_j;&c_d;&c_o;&c_s;&c_k;&c_o;&c_p;</trd>
  <trd lng="sk">kaleidoskop</trd>
</drv>

<drv mrk="kalejd.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="kalejd.0i.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      <ref tip="dif" cel="karuse.0i">Karuseli</ref>:
      <ekz>
        sed kian? &dash; <tld/>is proponoj
        <fnt><bib>RugxDom</bib> <lok>&ccirc;apitro 62a, p. 338a</lok></fnt>;
      </ekz>
      <ekz>
        bunte <tld/>as scenejoj, temoj kaj anka&ubreve; la Muzo &scirc;an&gcirc;adas sian viza&gcirc;on
        <fnt>
          <vrk><url ref="http://esperanto.net/literaturo/hv/kavernmarrec.html"
              >Kaverno apud la maro - esperanto.net</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        komikaj situacioj, surprizaj kaj ekscitaj okaza&jcirc;oj <tld/>as alterne, katenante
        la atenton kelkfoje &gcirc;is spirreteno
        <fnt>
          <vrk><url ref="http://www.tekstoj.nl/lm/lm31-1/recenzo.html"
              >Baghy, W&uuml;ster, Zamenhof, Privat &mdash; LM31-1</url></vrk>
        </fnt>.
      </ekz>
    </dif> 
    <refgrp tip="vid">
      <ref cel="bunt.0a">bunta</ref>
    </refgrp>
  </snc>
  <trdgrp lng="ca">
     <trd>embrollar-se</trd>,
     <trd>remenar-se</trd>,
     <trd>succeir-se</trd>
  </trdgrp>
  <trdgrp lng="fi">
     <trd>vaihdella (kuin kaleidoskoopissa)</trd>
  </trdgrp>
  <trdgrp lng="fr">
     <trd>se <ind>bousculer</ind><klr tip="ind"> (fig.)</klr></trd>
  </trdgrp>
  <trdgrp lng="hu">
     <trd>egym&aacute;st kergetik <klr tip="ind">(&aacute;tv.)</klr></trd>,
     <trd>sz&iacute;nesen <ind>v&aacute;ltakoznak</ind></trd>
  </trdgrp>
  <trd lng="nl">door elkaar <ind>wemelen</ind></trd>
  <trd lng="sk">d&iacute;va&tcaron; sa do kaleidoskopu</trd>
  <trd lng="cs">d&iacute;vat se do kaleidoskopu</trd>
</drv>
</art>
