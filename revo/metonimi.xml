<art mrk="$Id: metonimi.xml,v 1.16 2024/01/25 20:10:36 revo Exp $">
  <kap><rad>metonimi</rad>/o</kap>

<drv mrk="metonimi.0o">
  <kap><tld/>o</kap>
  <snc>
    <uzo tip="fak">LIN</uzo>
    <dif>
      <ref tip="super" cel="trop.0o">Tropo</ref>,
      indikanta ion per io alia konkrete ligita, ekz-e
      objekton per materialo (<ctl>armi sin per fero</ctl>,
      <ctl>trinki la glason</ctl>), 
      agon per ilo, ka&ubreve;zon per efiko 
      (<ctl>trinki la morton</ctl>, anstata&ubreve; venenon) ktp:
      <ekz>
        <ctl>legi Zamenhofon</ctl>, <ctl>lia verva plumo</ctl>
        estas <tld/>oj;
      </ekz>
      <ekz>
        la <tld/>o estas pli vulgara, pli populara ol la metaforo
        <fnt>
          <bib>Ret</bib>
        </fnt>;
      </ekz>
      <ekz>
        per <tld/>o, lia nomo signas momenton de <klr>[&#x2026;]</klr> interveno de la popolo
        <fnt>
          <bib>MD14</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="metafo.0o">metaforo</ref>,
      <ref cel="sinekdohx.0o">sinekdo&hcirc;o</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_m;&c_e;&c_t;&c_a;&c_n;&c_ib;&c_m;&c_ib;&c_ja;</trd>
  <trd lng="ca">meton&iacute;mia</trd>
  <trd lng="cs">metonymie</trd>
  <trd lng="da">metonymi</trd>
  <trd lng="de">Metonymie</trd>
  <trd lng="en">metonymy</trd>
  <trd lng="es">metonimia</trd>
  <trd lng="fa">&a_m;&a_j;&a_A;&a_z; &a_m;&a_r;&a_s;&a_l;</trd>
  <trd lng="fr">m&eacute;tonymie</trd>
  <trdgrp lng="hu">
    <trd>meton&iacute;mia</trd>,
    <trd>n&eacute;v&aacute;tvitel</trd>
  </trdgrp>
  <trd lng="ja">&#x63DB;&#x55A9;  <pr>&#x304B;&#x3093;&#x3086;</pr></trd>
  <trd lng="nl">metonymie</trd>
  <trdgrp lng="pl">
    <trd>metonimia</trd>,
    <trd>zamiennia</trd>
  </trdgrp>
  <trd lng="pt">meton&iacute;mia</trd>
  <trd lng="ru">&c_m;&c_je;&c_t;&c_o;&c_n;&c_i;&c_m;&c_i;&c_ja;</trd>
  <trd lng="sk">meton&yacute;mia</trd>
  <trdgrp lng="zh">
    <trd>&#x6362;&#x55BB; <pr>hu&#xE0;ny&#xF9;</pr></trd>,
    <trd>&#x63DB;&#x55BB; <pr>hu&#xE0;ny&#xF9;</pr></trd>,
    <trd>&#x8F49;&#x55BB; <pr>zhu&#x1CE;ny&#xF9;</pr></trd>,
    <trd>&#x8F6C;&#x55BB; <pr>zhu&#x1CE;ny&#xF9;</pr></trd>
  </trdgrp>
</drv>

