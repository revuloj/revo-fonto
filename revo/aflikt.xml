<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: aflikt.xml,v 1.21 2021/02/28 12:05:15 revo Exp $">
<kap>
  <ofc>3</ofc><rad>aflikt</rad>/i
</kap>
<drv mrk="aflikt.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="aflikt.0i.PSI">
    <dif>
      Ka&ubreve;zi koran suferon;
      <ref tip="vid" cel="prem.kor0i.PSI">korpremi</ref>,
      <ref tip="sin" cel="cxagre.0i.aflikti">&ccirc;agreni<sncref/></ref>:
      <ekz>
        lia mensogo kaj perfido <tld/>is &scirc;in;
      </ekz>
      <ekz>
        &scirc;ia konkurantino <tld/>is &scirc;in kaj tre incitis &scirc;in
        <fnt>
          <bib>MT</bib>
          <lok>I. Samuel 1:6</lok>
        </fnt>;
      </ekz>
      <ekz>
        kolekti&gcirc;is al li &ccirc;iuj viroj premataj, &scirc;ulduloj, <tld/>itoj
        <fnt>
          <bib>MT</bib>
          <lok>I. Samuel 22:2</lok>
        </fnt>;
      </ekz>
      <ekz>
        lia patro neniam <tld/>is lin per demando: kial vi tion faras?
        <fnt>
          <bib>MT</bib>
          <lok>I. Re&gcirc;oj 1:6</lok>
        </fnt>;
      </ekz>
      <ekz>
        la malfeli&ccirc;o de mia popolo min <tld/>as, mi mal&gcirc;ojas, mi sentas teruron
        <fnt>
          <bib>MT</bib>
          <lok>Jeremia 8:21</lok>
        </fnt>;
      </ekz>
      <ekz>
        mia patrino komence estis tre <tld/>ita, ke la variolo min tiel terure
        malbeligis, sed la patro ne tre estis <tld/>ita
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        videble io lin embarasis a&ubreve; <tld/>is <klr>[&#x2026;]</klr> eble lin <tld/>is malsano de iu el lia familio a&ubreve; el liaj amikoj
        <fnt>
          <bib>Marta</bib>
        </fnt>?
      </ekz>
    </dif>
    <ref tip="vid" cel="gxoj.mal0i">mal&gcirc;ojigi</ref>
  </snc>
  <trd lng="be">&c_z;&c_a;&c_s;&c_m;&c_u;&c_ch;&c_a;&c_c;&c_mol;</trd>
  <trdgrp lng="cs">
    <trd>kormoutit</trd>,
    <trd>mrzet</trd>,
    <trd>rmoutit</trd>,
    <trd>sou&zcaron;it</trd>,
    <trd>tr&aacute;pit</trd>,
    <trd>t&iacute;&zcaron;it</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>betr&uuml;ben</trd>,
    <trd>bek&uuml;mmern</trd>,
    <trd>kr&auml;nken</trd>,
    <trd>qu&auml;len</trd>
  </trdgrp>
  <trd lng="en">afflict</trd>
  <trd lng="es">afligir</trd>
  <trdgrp lng="fr">
    <trd>affliger</trd>,
    <trd>accabler<klr tip="ind"> (affliger)</klr></trd>,
    <trd>affecter<klr tip="ind"> (peiner)</klr></trd>,
    <trd>atteindre<klr tip="ind"> (peiner)</klr></trd>,
    <trd>attrister</trd>,
    <trd>chagriner<klr tip="ind"> (affliger)</klr></trd>,
    <trd>d&eacute;soler</trd>,
    <trd>navrer</trd>,
    <trd>peiner<klr tip="ind"> (chagriner)</klr></trd>,
    <trd>toucher<klr tip="ind"> (peiner)</klr></trd>
  </trdgrp>
  <trd lng="he">&#x5DC;&#x5E2;&#x5E0;&#x5D5;&#x5EA;</trd>
  <trd lng="it">affliggere</trd>
  <trd lng="nl">bedroeven</trd>
  <trdgrp lng="pt">
    <trd>afligir</trd>,
    <trd>angustiar</trd>,
    <trd>acabrunhar</trd>
  </trdgrp>
  <trd lng="ru">&c_o;&c_g;&c_o;&c_r;&c_ch;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>korm&uacute;ti&tcaron;</trd>,
    <trd>su&zcaron;ova&tcaron;</trd>,
    <trd>zarmucova&tcaron;</trd>
  </trdgrp>
</drv>

<drv mrk="aflikt.0o">
  <kap><tld/>o</kap>
  <snc mrk="aflikt.0o.PSI">
    <dif>
      Sento kaj stato de iu <tld/>ita:
      <ekz>
        mi konsolos ilin kaj gajigos ilin post ilia <tld/>o
        <fnt>
          <bib>MT</bib>
          <lok>Jeremia 31:13</lok>
        </fnt>;
      </ekz>
      <ekz>
        en espero &gcirc;ojaj, en <tld/>o paciencaj, en pre&gcirc;ado persistaj
        <fnt>
          <bib>NT</bib>
          <lok>Romanoj 12:12</lok>
        </fnt>;
      </ekz>
      <ekz>
        el multe da <tld/>o kaj kora dolorego mi skribis al vi kun multaj larmoj
        <fnt>
          <bib>NT</bib>
          <lok>II. Korintanoj 2:4</lok>
        </fnt>;
      </ekz>
      <ekz>
        mal&gcirc;ojo kaj <tld/>o pri si mem plenigis &scirc;in, &scirc;ajnis al &scirc;i, ke neniam povas
        malfermi&gcirc;i por &scirc;i la pordo de favorkoreco
        <fnt>
          <bib>Fab4</bib>
          <lok>Knabino, kiu pa&scirc;is sur panon</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="cxagre.0o">&ccirc;agreno</ref>,
      <ref cel="gxoj.mal0o">mal&gcirc;ojo</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_z;&c_a;&c_s;&c_m;&c_u;&c_ch;&c_e;&c_n;&c_mol;&c_n;&c_je;</trd>
  <trdgrp lng="cs">
    <trd>skl&iacute;&ccaron;enost</trd>,
    <trd>sou&zcaron;en&iacute;</trd>,
    <trd>tr&aacute;pen&iacute;</trd>,
    <trd>z&aacute;rmutek</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Betr&uuml;bnis</trd>,
    <trd>K&uuml;mmernis</trd>,
    <trd>Kummer</trd>,
    <trd>Leid</trd>,
    <trd>Herzeleid</trd>,
    <trd>Niedergeschlagenheit</trd>,
    <trd>Qual</trd>
  </trdgrp>
  <trd lng="en">affliction</trd>
  <trdgrp lng="fr">
    <trd>affliction</trd>,
    <trd>accablement</trd>,
    <trd>chagrin<klr tip="ind"> (sentiment)</klr></trd>,
    <trd>peine<klr tip="ind"> (affliction)</klr></trd>,
    <trd>tristesse</trd>
  </trdgrp>
  <trdgrp lng="he">
    <trd>&#x5D0;&#x5E1;&#x5D5;&#x5DF;</trd>,
    <trd>&#x5E6;&#x5E2;&#x5E8;</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>afflizione</trd>,
    <trd>pena<klr> (sofferenza)</klr></trd>,
    <trd>travaglio</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>afli&ccedil;&atilde;o</trd>,
    <trd>agonia</trd>
  </trdgrp>
  <trd lng="ru">&c_o;&c_g;&c_o;&c_r;&c_ch;&c_je;&c_n;&c_i;&c_je;</trd>
  <trdgrp lng="sk">
    <trd>s&uacute;&zcaron;enie</trd>,
    <trd>z&aacute;rmutok</trd>
  </trdgrp>
</drv>

<drv mrk="aflikt.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc mrk="aflikt.0igxi.PSI">
    <dif>
      I&gcirc;i <tld/>ata:
      <ekz>
        lia spirito <tld/>i&gcirc;is
        <fnt>
          <bib>MT</bib>
          <lok>Genezo 41:8</lok>
        </fnt>;
      </ekz>
      <ekz>
        &leftquot;&scirc;i estos malbela, &scirc;i ne edzini&gcirc;os&rightquot; &dash; la patro, anstata&ubreve; <tld/>i&gcirc;i kiel la
        patrino, ofte ridadis
        <fnt>
          <bib>Marta</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>se <ind>chagriner</ind><klr tip="ind">
    (s'affliger)</klr></trd>,
    <trd>s'<ind>affliger</ind></trd>
    <trd>s'<ind>attrister</ind></trd>,
    <trd>se <ind>d&eacute;soler</ind></trd>
  </trdgrp>
  <trd lng="he">&#x5DC;&#x5D4;&#x5EA;&#x5D0;&#x5D1;&#x5DC;</trd>
  <trdgrp lng="it">
    <trd>affliggersi</trd>, <trd>addolorarsi</trd>
  </trdgrp>
</drv>

<drv mrk="aflikt.0igxo">
  <kap><tld/>i&gcirc;o</kap>
  <snc mrk="aflikt.0igxo.PSI">
    <dif>
      &Scirc;an&gcirc;i&gcirc;o de animstato al <ref tip="dif" cel="aflikt.0o"><tld/>o</ref>:
      <ekz>
        &scirc;ia patro perdis sian oficon, kaj de <tld/>i&gcirc;o li malsani&gcirc;is
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        ni ne konsumu niajn korojn per vanaj <tld/>i&gcirc;oj
        <fnt>
          <bib>Marta</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>affliction</trd>,
    <trd>accablement</trd>,
    <trd>chagrin<klr tip="ind"> (sentiment)</klr></trd>,
    <trd>peine<klr tip="ind"> (affliction)</klr></trd>,
    <trd>tristesse</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>afflizione</trd>, <trd>sconforto</trd>
  </trdgrp>
</drv>
</art>
