<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: kursiv.xml,v 1.19 2022/03/22 15:44:14 revo Exp $">
    <kap>
      <ofc>1</ofc>
      <rad>kursiv</rad>/o
    </kap>

    <drv mrk="kursiv.0o">
      <kap>
        <tld/>o
      </kap>
      <snc mrk="kursiv.0o.TIP">
        <uzo tip="fak">TIP</uzo>
        <dif>
          Speco de pressignoj, klinitaj al dekstro, similaj al la
          literoj
          de rapida manskribo:
          <ekz>
            uzo de <tld/>o por montri vortemfazon en la angla
            originalo
            <fnt>
              <vrk><url ref="http://www.abebooks.co.uk/9781904808862/Aventuroj-Alico-Mirlando-Alices-Adventures-1904808867/plp">Priskribo de tradukeldono</url></vrk>
            </fnt>;
          </ekz><ekz>
            <tld/>o de la a&ubreve;toro
            <klr>(noto &ccirc;e cita&jcirc;o)</klr>.
          </ekz>
        </dif>
        <ref tip="vid" cel="gras.0a.tip">grasa</ref>
        <rim>
          Ne konfuzu kun oblikva tiparfasono.
        </rim>
        <trdgrp lng="de">
          <trd>Kursivschrift</trd>,
          <trd>Kursive</trd>
        </trdgrp>
        <trd lng="en">italics</trd>
        <trdgrp lng="es">
          <trd>cursiva</trd>,
          <trd>it&aacute;lica</trd>
        </trdgrp>
        <trd lng="fr">italique</trd>
        <trdgrp lng="hu">
          <trd>d&odblac;lt bet&udblac;s &iacute;r&aacute;s</trd>,
          <trd>kurz&iacute;v &iacute;r&aacute;s</trd>
        </trdgrp>
        <trd lng="it">corsivo</trd>
        <trd lng="pl">kursywa</trd>
        <trd lng="ru">&c_k;&c_u;&c_r;&c_s;&c_i;&c_v;</trd>
      </snc>
      <snc mrk="kursiv.0o.manskribo">
        <uzo tip="stl">RAR</uzo>
        <dif>
          Klinita rapida manskribo.
        </dif>
        <trdgrp lng="en">
          <trd>cursive</trd>,
          <trd>running hand</trd>
        </trdgrp>
        <trd lng="hu">foly&oacute;&iacute;r&aacute;s</trd>
        <trd lng="pl">pismo pochy&lstroke;e</trd>
        <trd lng="ru">&c_s;&c_k;&c_o;&c_r;&c_o;&c_p;&c_i;&c_s;&c_mol;</trd>
      </snc>
      <trd lng="be">&c_k;&c_u;&c_r;&c_s;&c_ib;&c_w;</trd>
      <trd lng="nl">cursief</trd>
      <trd lng="pt">cursivo</trd>
      <trd lng="uk">&#x43A;&#x443;&#x440;&#x441;&#x438;&#x432;</trd>
</drv>

    <drv mrk="kursiv.0a">
      <kap>
        <tld/>a
      </kap>
      <snc mrk="kursiv.0a.TIP">
        <uzo tip="fak">TIP</uzo>
        <dif>
          Presita en <tld/>o<sncref ref="kursiv.0o.TIP"/>:
          <ekz>
            nevalidajn normtekstojn ni citas en <tld/>aj literoj
            <fnt>
              <aut>Helmuto Velger</aut>:
              <vrk><url ref="http://web.archive.org/web/20070927235532/http://www.info-servo.de/Kontribuoj.htm">Kontribuoj al la norma esperantologio</url></vrk>
            </fnt>;
          </ekz><ekz>
            <tld/>e presitaj sciencaj (ne-Esperantaj) nomoj de
            bestoj kaj vegeta&jcirc;oj
            <fnt>
              <aut>AdE</aut>:
              <vrk>Na&ubreve;a Oficiala Aldono al la Universala Vortaro</vrk>.
            </fnt>.
          </ekz>
        </dif>
        <trd lng="en">italic<klr> (letter, type)</klr></trd>
        <trd lng="ru">&c_k;&c_u;&c_r;&c_s;&c_i;&c_v;&c_n;&c_y;&c_j;</trd>
      </snc>
      <trd lng="uk">&#x43A;&#x443;&#x440;&#x441;&#x438;&#x432;&#x43D;&#x438;&#x439;</trd>
</drv>

<drv mrk="kursiv.0igi">
  <kap>
    <tld/>igi
  </kap>
  <snc mrk="kursiv.0igi.TIP">
    <uzo tip="fak">TIP</uzo>
    <dif>
      &Scirc;an&gcirc;i la normalan (rektan) tiparfasonon en
      <tld/>on<sncref ref="kursiv.0o.TIP"/>:
      <ekz>
        Zamenhof mem <tld/>igis
        <klr>(noto &ccirc;e cita&jcirc;o)</klr>
        <fnt><bib>BonaLingvo</bib></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="en">italicize</trd>
  <trd lng="ru">&c_v;&c_y;&c_d;&c_je;&c_l;&c_i;&c_t;&c_mol; <ind>&c_k;&c_u;&c_r;&c_s;&c_i;&c_v;&c_o;&c_m;</ind></trd>
  <trd lng="uk">&#x432;&#x438;&#x434;&#x456;&#x43B;&#x44F;&#x442;&#x438; &#x43A;&#x443;&#x440;&#x441;&#x438;&#x432;&#x43E;&#x43C;</trd>
</drv>

</art>
