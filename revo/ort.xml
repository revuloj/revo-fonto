<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>8</ofc>
<rad>ort</rad>/a
</kap>
<drv mrk="ort.0o">
  <kap><tld/>o</kap>
  <snc>
    <uzo tip="fak">MAT</uzo>
    <uzo tip="klr">(elementa geometrio)</uzo>
    <dif>
      <ref cel="angul.0o">Angulo</ref> je 90&ring;:
      <ekz>
        se du rektoj <ref cel="kruc.0igxi.MAT">kruci&gcirc;as</ref> tiel, ke du 
        <ref cel="apud.0a.angulo">apudaj</ref> anguloj estas egalaj, ili 
        determinas kvar <tld/>ojn<fnt>8a OA</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">angle droit</trd>
  <trd lng="nl">rechte <ind>hoek</ind></trd>
</drv>
<drv mrk="ort.0a">
  <kap><tld/>a<fnt>Z</fnt></kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="ort.0a.angulo">
    <dif>
      <klr>(p.p. <ref cel="angul.0o.figuro">angulo</ref>)</klr>
      Estanta <tld/>o; kies mezuro egalas al 90&ring;:
      <ekz>
        rektangulo oni nomas kvarlateron, kies almena&ubreve; unu
        angulo estas <tld/>a.
      </ekz>
    </dif>
    <trd lng="fr"><klr tip="ind">(angle) </klr><ind>droit</ind></trd>
    <trd lng="nl">rechthoekig</trd>
  </snc>
  <snc mrk="ort.0a.figuroj">
    <dif>
      <klr>(p.p. <ref cel="figur.geometria0o">geometriaj figuroj</ref>)</klr>
      Tiaj, ke ili sin intersekcas formante <tld/>on:
      <ekz>
        la teraj meridianoj kaj paraleloj estas inter si <tld/>aj;
      </ekz>
      <ekz>
        ebeno orta al lumradio.
      </ekz>
    </dif>
    <adm>
    Enkonduki la geografian sencon de "paralelo" en la
    artikolo "paralela". <aut>MB</aut>
    </adm>
    <trdgrp lng="fr">
      <trd>orthogonal</trd>,
      <trd>perpendiculaire<klr tip="ind"> (adj.)</klr></trd>
    </trdgrp>
    <trd lng="nl">loodrecht</trd>
  </snc>
  <snc mrk="ort.0a.vektoroj">
    <dif>
      <klr>(p.p. vektoroj en
      <ref cel="spac.euxklida0o">e&ubreve;klida spaco</ref>)</klr>
      Tiaj, ke ilia <ref cel="produt.skalara0o">skalara produto</ref>
      egalas al nulo:
      <ekz>
        se x estas <tld/>a kun y, validas la pitagora teoremo:
        ||x+y||<sup>2</sup>=||x||<sup>2</sup>+||y||<sup>2</sup>;
      </ekz>
      <ekz>
        <tld/>a <ref cel="baz.0o.vektoraspaco">bazo</ref> estas bazo,
        kies &ccirc;iuj vektoroj estas <tld/>aj inter si;
      </ekz>
      <ekz>
        oni diras, ke vektoro estas <tld/>a kun subaro, se &gcirc;i estas
        <tld/>a kun &ccirc;iu &gcirc;ia elemento.
      </ekz>
    </dif>
    <trd lng="fr">orthogonal</trd>
  </snc>
  <snc mrk="ort.0a.aro">
    <dif>
      <klr>(p.p. subaro de
      <ref cel="spac.euxklida0o">e&ubreve;klida spaco</ref>,
      rilate al alia subaro <em>A</em>)</klr>
      Tia, ke &ccirc;iuj &gcirc;iaj elementoj estas
      <ref cel="ort.0a.vektoroj"><tld/>aj
      <sncref ref="ort.0a.vektoroj"/></ref>
      kun tiuj de <em>A</em>:
      <ekz>
        la <tld/>a aro de subaro estas fermita vektora subspaco.
      </ekz>
    </dif>
    <trd lng="fr">orthogonal</trd>
  </snc>
</drv>
<drv mrk="ort.0angulo">
  <kap><tld/>angulo</kap>
  <snc>
    <ref tip="dif" cel="angul.rekt0o">rektangulo.</ref>
  </snc>
</drv>
<drv mrk="ort.0anto">
  <kap><tld/>anto</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="rekt.0o.elementa">Rekto</ref> <tld/>a al iu alia figuro.
    </dif>
  </snc>
  <trd lng="fr">perpendiculaire<klr tip="ind"> (subst.)</klr></trd>
</drv>
<drv mrk="ort.mez0anto">
  <kap>mez<tld/>anto</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(de <ref cel="strek.0o.segmento">streko</ref>)</klr>
      <ref tip="super" cel="rekt.0o.elementa">Rekto</ref> <tld/>a al &gcirc;i
      kaj trairanta &gcirc;ian <ref cel="mez.0o.punkto">mezon</ref>:
      <ekz>
        la mez<tld/>antoj de <ref cel="angul.tri0o">triangulo</ref>
        <klr>(t.e. de &ccirc;iuj &gcirc;iaj lateroj)</klr> intersekci&gcirc;as
        en la centro de la
        <ref cel="skrib.cxirkaux0ita">&ccirc;irka&ubreve;skribita</ref> cirklo.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">m&eacute;diatrice<klr tip="ind"> (g&eacute;om.)</klr></trd>
</drv>
</art>
