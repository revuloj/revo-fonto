<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>8</ofc>
  <rad>ort</rad>/o
</kap>
<drv mrk="ort.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 26</lok></fnt>
  <uzo tip="klr">(elementa geometrio)</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="angul.0o.figuro">Angulo</ref> je 90&ring;:
      <ekz>
        se du rektoj <ref cel="kruc.0igxi.MAT">kruci&gcirc;as</ref> tiel, ke du
        <ref cel="apud.0a.angulo">apudaj</ref> anguloj estas egalaj, ili
        determinas kvar <tld/>ojn<fnt>8a OA</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">rechter <ind>Winkel</ind></trd>
  <trd lng="en">right <ind>angle</ind></trd>
  <trd lng="fr">angle droit</trd>
  <trd lng="nl">rechte <ind>hoek</ind></trd>
  <trd lng="ru">&c_p;&c_r;&c_ja;&c_m;&c_o;&c_j; <ind>&c_u;&c_g;&c_o;&c_l;</ind></trd>
</drv>

<drv mrk="ort.0a">
  <kap><tld/>a<fnt>Z</fnt></kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="ort.0a.angulo">
    <fnt><bib>MatTerm</bib><lok>p. 26</lok></fnt>
    <dif>
      <klr>(p.p. <ref cel="angul.0o.figuro">angulo</ref>)</klr>
      Estanta <tld/>o; kies mezuro egalas al 90&ring;:
      <ekz>
        rektangulo oni nomas paralelogramon, kies almena&ubreve; unu
        angulo estas <tld/>a.
      </ekz>
    </dif>
    <ref tip="sin" cel="rekt.0a.orta">rekta.</ref>
    <trd lng="de">rechter<klr tip="amb"> (Winkel)</klr></trd>
    <trd lng="en">right<klr tip="ind"> (angle)</klr></trd>
    <trd lng="fr"><klr tip="ind">(angle) </klr><ind>droit</ind></trd>
    <trd lng="nl">rechte<klr tip="amb"> (hoek)</klr></trd>
    <trd lng="ru">&c_p;&c_r;&c_ja;&c_m;&c_o;&c_j;<klr tip="ind"> (&c_u;&c_g;&c_o;&c_l;)</klr></trd>
  </snc>
  <snc mrk="ort.0a.plurlatero">
    <uzo tip="stl">EVI</uzo>
    <fnt><bib>MatTerm</bib><lok>p. 30, pri paralelepipedo</lok></fnt>
    <dif>
      <klr>(p.p. <ref cel="later.plur0o">plurlatero</ref> a&ubreve;
      <ref cel="edr.plur0o">pluredro</ref>)</klr>
    </dif>
    <ref tip="dif" cel="angul.ort0a"><tld/>angula.</ref>
    <rim>
      &Ccirc;i tiu senco povas esti konsiderata kiel mallongigo, foje bonvena:
      <ekz>
        <tld/>a triangulo
      </ekz>
      estas pli malpeza ol
      <ekz>
        <tld/>angula triangulo.
      </ekz>
      &Gcirc;i tamen restas malofta kaj evitinda.
    </rim>
    <trd lng="de">rechwinklig</trd>
    <trd lng="en">right-angled</trd>
    <trd lng="fr">rectangle<klr tip="ind"> (adj.)</klr></trd>
    <trd lng="nl">rechthoekig</trd>
    <trd lng="ru">&c_p;&c_r;&c_ja;&c_m;&c_o;&c_u;&c_g;&c_o;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
  </snc>
  <snc>
    <subsnc mrk="ort.0a.figuroj">
      <fnt><bib>PIV1</bib></fnt>
      <dif>
        <klr>(p.p. <ref cel="figur.geometria0o">geometriaj figuroj</ref>)</klr>
        Tiaj, ke ili sin intersekcas formante <tld/>on:
        <ekz>
          ortaj rektoj, cirkloj, ebenoj;
        </ekz>
        <ekz>
          la teraj meridianoj kaj paraleloj estas inter si <tld/>aj;
        </ekz>
        <ekz>
          ebeno orta al lumradio.
        </ekz>
      </dif>
      <adm>
        PIV1 enkondukis "inter~aj", specife kun tia senco kaj
        MatVort subtenas gxin. PIV2 sxajne ne havos tiun
        ne tre utilan derivajxon.
        <aut>MB</aut>
      </adm>
      <ref tip="sin" cel="perpen1.0a">perpendikulara.</ref>
      <trd lng="nl">loodrecht</trd>
    </subsnc>
    <subsnc mrk="ort.0a.vektoroj">
      <dif>
        <klr>(p.p. vektoroj en
        <ref cel="spac.euxklida0o">e&ubreve;klida spaco</ref>)</klr>
        Tiaj, ke ilia <ref cel="produt.skalara0o">skalara produto</ref>
        egalas al nulo:
        <ekz>
          se x estas <tld/>a al y, validas la pitagora teoremo:
          ||x+y||<sup>2</sup>=||x||<sup>2</sup>+||y||<sup>2</sup>;
        </ekz>
        <ekz>
          <tld/>a <ref cel="baz.0o.vektoraspaco">bazo</ref> estas bazo,
          kies &ccirc;iuj vektoroj estas <tld/>aj inter si;
        </ekz>
        <ekz>
          oni diras, ke vektoro estas <tld/>a al subaro, se &gcirc;i estas
          <tld/>a al &ccirc;iu &gcirc;ia elemento.
        </ekz>
      </dif>
    </subsnc>
    <subsnc mrk="ort.0a.aro">
      <dif>
        <klr>(p.p. subaro de
        <ref cel="spac.euxklida0o">e&ubreve;klida spaco</ref>,
        rilate al alia subaro <em>A</em>)</klr>
        Tia, ke &ccirc;iuj &gcirc;iaj elementoj estas
        <ref cel="ort.0a.vektoroj"><tld/>aj
        <sncref ref="ort.0a.vektoroj"/></ref>
        al tiuj de <em>A</em>:
        <ekz>
          la <tld/>a aro de subaro estas fermita vektora subspaco.
        </ekz>
      </dif>
    </subsnc>
    <trdgrp lng="de">
      <trd>orthogonal</trd>,
      <trd>senkrecht</trd></trdgrp> 
    <trdgrp lng="en">
      <trd>orthogonal</trd>,
      <trd>perpendicular</trd></trdgrp> 
    <trdgrp lng="fr">
      <trd>orthogonal</trd>,
      <trd>perpendiculaire<klr tip="ind"> (adj.)</klr></trd>
    </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_o;&c_r;&c_t;&c_o;&c_g;&c_o;&c_n;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
      <trd>&c_p;&c_je;&c_r;&c_p;&c_je;&c_n;&c_d;&c_i;&c_k;&c_u;&c_l;&c_ja;&c_r;&c_n;&c_y;&c_j;
      </trd></trdgrp> 
  </snc>
  <refgrp tip="vid">
    <ref cel="projek.orta0o"><tld/>a projekcio</ref>,
    <ref cel="simetr.orta0o"><tld/>a simetrio</ref>.
  </refgrp>
</drv>

<drv mrk="ort.0anto">
  <kap><tld/>anto</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      <ref tip="super" cel="rekt.0o.elementa">Rekto</ref> <tld/>a al iu alia
      figuro.
    </dif>
    <refgrp tip="sin">
      <ref cel="perpen.0o">perpendiklo</ref>,
      <ref cel="perpen1.0o">perpendikularo</ref>.
    </refgrp>
    <rim>
      Tiu &ccirc;i termino aperis anka&ubreve; &ccirc;e Bricard,
      <fnt><bib>MatTerm</bib><lok>p. 27</lok></fnt>
      sed kun malpli vasta senco, nome: <ref cel="alt.0o.MAT">alto</ref>.
      La malnova senco konservi&gcirc;is &gcirc;is en <fnt><bib>PV</bib></fnt>.
    </rim>
  </snc>
  <trd lng="de">Senkrechte</trd>
  <trd lng="en">perpendicular</trd>
  <trd lng="fr">perpendiculaire<klr tip="ind"> (subst.)</klr></trd>
  <trd lng="ru">&c_p;&c_je;&c_r;&c_p;&c_je;&c_n;&c_d;&c_i;&c_k;&c_u;&c_l;&c_ja;&c_r;</trd>
</drv>

<drv mrk="ort.mez0anto">
  <kap>mez<tld/>anto</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      <klr>(de <ref cel="strek.0o.elementa">streko</ref>)</klr>
      <ref tip="super" cel="rekt.0o.elementa">Rekto</ref> <tld/>a al &gcirc;i
      kaj trairanta &gcirc;ian <ref cel="mez.0o.punkto">mezon</ref>:
      <ekz>
        la mez<tld/>antoj de <ref cel="angul.tri0o">triangulo</ref>
        <klr>(t.e. de &ccirc;iuj &gcirc;iaj lateroj)</klr> intersekci&gcirc;as
        en la centro de la
        <ref cel="skrib.cxirkaux0ita">&ccirc;irka&ubreve;skribita</ref> cirklo.
      </ekz>
    </dif>
  </snc>
  <trd lng="en">mid-perpendicular<klr tip="ind"> (of a segment)</klr></trd>
  <trd lng="de">Mittelsenkrechte</trd>
  <trd lng="fr">m&eacute;diatrice<klr tip="ind"> (d'un segment)</klr></trd>
  <trd lng="ru">&c_m;&c_je;&c_d;&c_i;&c_a;&c_t;&c_r;&c_i;&c_s;&c_a;
  <klr tip="ind"> (&c_o;&c_t;&c_r;&c_je;&c_z;&c_k;&c_a;)</klr></trd>
</drv>
</art>
