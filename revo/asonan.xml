<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>2</ofc>
  <rad>asonanc</rad>/o
</kap>
<drv mrk="asonan.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">POE</uzo>
  <snc mrk="asonan.0o.ena_ripetado">
    <dif>
      Efekta ripeto de sama a&ubreve; simila vokalo, ekz-e ene de verso:
      <ekz>
        noktuo jam ululis sur forumo;
      </ekz>
      <ekz>
        ravita mi priskribas vin, &ccirc;ar mi je vi sopiras.
      </ekz>
    </dif>
    <trd lng="fr">allit&eacute;ration<klr tip="ind"> (de voyelles)</klr></trd>
    <trd lng="ru">&c_a;&c_l;&c_l;&c_i;&c_t;&c_je;&c_r;&c_a;&c_c;&c_i;&c_ja; &c_g;&c_l;&c_a;&c_s;&c_n;&c_y;&c_h;</trd>
  </snc>
  <snc mrk="asonan.0o.rimo">
    <dif>
      <ref tip="super" cel="rim.nepura0o">Nepura rimo</ref>, en kiu
      nur la vokaloj samas:
      <ekz>
        &leftquot;faros-baron&rightquot;, &leftquot;an&gcirc;elan-belaj&rightquot;, &leftquot;sen&gcirc;ena-ven&gcirc;ema&rightquot;,
        &leftquot;muta-suna&rightquot;, &leftquot;lavos-banon&rightquot;;
      </ekz>
      <ekz>
        <tld/>aj versoj.
      </ekz>
    </dif>
    <ref tip="vid" cel="rimoid.0o">rimoido</ref>
    <trd lng="fr">assonance</trd>
  </snc>
  <trdgrp lng="ru">
    <trd>&c_a;&c_s;&c_s;&c_o;&c_n;&c_a;&c_n;&c_s;</trd>,
    <trd>&c_s;&c_o;&c_z;&c_v;&c_u;&c_ch;&c_i;&c_je;</trd>
  </trdgrp>
</drv>

<drv mrk="asonan.0igi">
  <kap><tld/>(ig)i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Fini per <tld/>oj.
    </dif>
  </snc>
  <trd lng="fr">assonancer</trd>
</drv>
</art>
