<art mrk="$Id: asonan.xml,v 1.27 2025/03/27 16:26:12 revo Exp $">
<kap>
  <ofc>2</ofc>
  <rad>asonanc</rad>/o
<fnt><bib>JED</bib></fnt></kap>
<drv mrk="asonan.0o">
  <kap><tld/>o</kap>
  <snc mrk="asonan.0o.ena_ripetado">
    <uzo tip="fak">POE</uzo>
    <dif>
      Efekta ripeto de sama a&ubreve; simila vokalo, ekzemple ene de verso:
      <ekz>
        noktuo jam ululis sur forumo;
      </ekz>
      <ekz>
        ravita mi priskribas vin, &ccirc;ar mi je vi sopiras.
      </ekz>
    </dif>
    <trd lng="en">alliteration</trd>
    <trd lng="fr">allit&eacute;ration<klr tip="ind"> (de voyelles)</klr></trd>
    <trd lng="hu">mag&aacute;nhangz&oacute;s <ind>alliter&aacute;ci&oacute;</ind></trd>
    <trd lng="ru">&c_a;&c_l;&c_l;&c_i;&c_t;&c_je;&c_r;&c_a;&c_c;&c_i;&c_ja; &c_g;&c_l;&c_a;&c_s;&c_n;&c_y;&c_h;</trd>
  </snc>
  <snc mrk="asonan.0o.rimo">
    <uzo tip="fak">POE</uzo>
    <dif>
      <ref tip="super" cel="rim.nepura0o">Nepura rimo</ref>, en kiu
      nur la vokaloj samas:
      <ekz>
        faros &#8208; baron, an&gcirc;elan &#8208; belaj, sen&gcirc;ena &#8208;
        ven&gcirc;ema, muta &#8208; suna, lavos &#8208; banon;
      </ekz>
      <ekz>
        <tld/>aj versoj.
      </ekz>
    </dif>
    <ref tip="vid" cel="rimoid.0o">rimoido</ref>
    <trd lng="fr">assonance</trd>
  </snc>
  <rim>
    La&#365; <fnt><bib>BL</bib></fnt>: Prefere diru <ke>sonsimileco</ke>, <ke>kvaza&#365;rimo</ke>, <ke>sonripetado</ke>.
  </rim>

  <trd lng="be">&c_a;&c_s;&c_a;&c_n;&c_a;&c_n;&c_s;</trd>
  <trd lng="ca">asson&agrave;ncia</trd>
  <trdgrp lng="cs">
    <trd>asonance</trd>,
    <trd>p&rcaron;ibli&#382;n&#253; r&#253;m</trd>,
    <trd>souzn&#283;n&#237;</trd>
  </trdgrp>
  <trd lng="en">assonance</trd>
  <trd lng="he">&#1491;&#1497;&#1502;&#1497;&#1493;&#1503;
  &#1514;&#1504;&#1493;&#1506;&#1493;&#1514; &#1489;&#1495;&#1512;&#1493;&#1494;</trd>
  <trdgrp lng="hu">
    <trd>asszon&aacute;nc</trd>,
    <trd>mag&aacute;nhangz&oacute;s <ind>r&iacute;m</ind></trd>
  </trdgrp>
  <trd lng="it">assonanza</trd>
  <trdgrp lng="ja">
    <trd>&#27597;&#38899;&#25276;&#38907;  <pr>&#12412;&#12356;&#12435;&#12362;&#12358;&#12356;&#12435;</pr></trd>,
    <trd>&#21322;&#35559;&#38899;  <pr>&#12399;&#12435;&#12363;&#12356;&#12362;&#12435;</pr></trd>,
    <trd>&#39006;&#38899;  <pr>&#12427;&#12356;&#12362;&#12435;</pr></trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>asonans</trd>,
    <trd>rym niedok&lstroke;adny</trd>
  </trdgrp>
  <trdgrp lng="ro">
    <trd>asonan&#539;&abreve;</trd>,
    <trd>rim&abreve; inexact&abreve;</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_a;&c_s;&c_s;&c_o;&c_n;&c_a;&c_n;&c_s;</trd>,
    <trd>&c_s;&c_o;&c_z;&c_v;&c_u;&c_ch;&c_i;&c_je;</trd>
  </trdgrp>
  <trd lng="sk">asonancia</trd>
  <trdgrp lng="uk">
    <trd>&c_a;&c_s;&#1086;&#1085;&c_a;&#1085;&c_s;</trd>,
    <trd>&c_s;&#1087;&c_ib;&c_v;&c_z;&c_v;&c_u;&c_ch;&c_ch;&#1103;</trd>
  </trdgrp>
</drv>

<drv mrk="asonan.0igi">
  <kap><tld/>igi</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="asonan.0igi.POE">
    <dif>
      Fini per <tld/>oj.
    </dif>
  </snc>
  <trd lng="be">&c_u;&c_t;&c_v;&c_a;&c_r;&c_a;&c_c;&c_mol; <ind>&c_a;&c_s;&c_a;&c_n;&c_a;&c_n;&c_s;</ind></trd>
  <trd lng="ca">assonar</trd>
  <trd lng="cs">vytv&#225;&rcaron;et asonance</trd>
  <trd lng="en">alliterate</trd>
  <trd lng="fr">assonancer</trd>
  <trd lng="it">assonare</trd>
  <trd lng="pl">tworzy&cacute;  <ind>asonans</ind></trd>
  <trd lng="ro">creeaz&abreve;  <ind>asonan&#539;&abreve;</ind></trd>
  <trd lng="sk">vytv&#225;ra&tcaron; asonancie</trd>
</drv>
</art>
