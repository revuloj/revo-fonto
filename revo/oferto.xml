<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <rad>ofertori</rad>/o
    </kap>

    <drv mrk="oferto.0o">
      <kap><tld/>o</kap>
      <uzo tip="fak">KRI</uzo>
      <snc mrk="oferto.0o.KAT">
        <uzo tip="fak">KAT</uzo>
        <dif>
          Tiu parto de la <ref tip="malprt" cel="mes.0o">meso</ref>
          en kiu la pastro prezentas (oferas) al Dio panon kaj vinon
          anta&ubreve; la konsekrado, kaj la pre&gcirc;oj akompanantaj tiun
          prezentadon.
        </dif>
      </snc>

      <snc mrk="oferto.0o.orto">
        <dif>
          En ortodoksismo, tiu parto de la
          <ref tip="malprt" cel="litur.0o.KRI">liturgio<sncref/></ref>,
          dum kiu la pastro preparas la substancon por e&ubreve;karistio.
        </dif>
      </snc>

      <trd lng="be">&c_p;&c_r;&c_y;&c_n;&c_ja;&c_s;&c_je;&c_n;&c_mol;&c_n;&c_je;
&c_d;&c_a;&c_r;&c_o;&c_w; <klr>(&c_u; &c_ch;&c_a;&c_s; &c_ib;&c_m;&c_sh;&c_y;)</klr></trd>
      <trdgrp lng="de">
        <trd>Offertorium</trd>,
        <trd>Opfergebet</trd>
      </trdgrp>
      <trd lng="el">&pi;&rho;&omikron;&sigma;&kappa;&omikron;&my;&jota;&delta;&eta_ton;</trd>
      <trd lng="en">offertory</trd>
      <trdgrp lng="hu">
        <trd>felaj&aacute;nl&aacute;s</trd>,
        <trd>offert&oacute;rium</trd>
      </trdgrp>
      <trd lng="nl">offertorium</trd>
      <trd lng="pt">ofert&oacute;rio</trd>
      <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_k;&c_o;&c_m;&c_i;&c_d;&c_i;&c_ja;</trd>
    </drv>
  </art>
