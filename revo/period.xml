<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>period</rad>/o
</kap>
<drv mrk="period.0o">
  <kap><tld/>o</kap>
  <snc mrk="period.0o.AST">
    <uzo tip="fak">AST</uzo>
    <dif>
      Tempo, kiun bezonas astro por retrovi&gcirc;i en sama punkto de sia
      rondvojo.
    </dif>
    <refgrp tip="vid">
      <ref cel="stadi.0o">stadio</ref>,
      <ref cel="faz.0o">fazo</ref>.
    </refgrp>
    <trdgrp lng="hu">
      <trd>peri&oacute;dus</trd>,
      <trd>kering&eacute;si id&odblac;</trd></trdgrp>
  </snc>
  <snc mrk="period.0o.funkcio">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>EKV</bib><lok>&para;333</lok></fnt>
    <dif>
      <klr>(de reela <ref cel="funkci.0o.MAT">funkcio</ref> f)</klr>
      &Ccirc;iu tia reelo T, ke f(x+T)=f(x), kiu ajn estas x; pli specife: la
      plej malgranda el tiuj nombroj:
      <ekz>
        la funkcion <ref cel="sinus.0o.funkcio">sinuso</ref> havas <tld/>on
        2&pi;.
      </ekz>
    </dif>
    <rim>
      La difino nature vasti&gcirc;as al kompleksaj funkcioj kaj al &ccirc;iuj
      aliaj okazoj, kiam adicio estas difinita en la fonto-aro.
    </rim>
    <trdgrp lng="hu">
      <trd>peri&oacute;dus</trd>,
      <trd>szakasz</trd></trdgrp>
  </snc>
  <snc mrk="period.0o.dauxro">
    <dif>
      Tempa da&ubreve;ro inter du difinitaj fazoj de fenomeno a&ubreve; de
      evoluado.
    </dif>
    <refgrp tip="vid">
      <ref cel="epok.0o">epoko</ref>
    </refgrp>
    <trdgrp lng="hu">
      <trd>id&odblac;szak</trd>,
      <trd>id&odblac;k&ouml;z</trd></trdgrp>
  </snc>
  <snc mrk="period.0o.BELE">
    <uzo tip="fak">BELE</uzo>
    <dif>
      Aro da frazoj prezentanta malvolvi&gcirc;on de iu unueca penso.
    </dif>
    <refgrp tip="sin">
      <ref cel="fraz.0aro">frazaro</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Periode</trd>
  <trd lng="en">period</trd>
  <trdgrp lng="fr">
    <trd>p&eacute;riode</trd>
  </trdgrp>
  <trd lng="hu">k&ouml;rmondat</trd>
  <trd lng="nl">periode</trd>
  <trd lng="ru">&c_p;&c_je;&c_r;&c_i;&c_o;&c_d;</trd>
</drv>

<drv mrk="period.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Ripeti&gcirc;anta post pli malpli difinita tempo:
      <ekz>
        <tld/>a febro, eldona&jcirc;o, fenomeno.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="interm.0a">intermita</ref>.
    </refgrp>
    <trdgrp lng="hu">
      <trd>periodikus</trd>,
      <trd>id&odblac;szakos</trd></trdgrp>
    <trd
    lng="ru">&c_p;&c_je;&c_r;&c_i;&c_o;&c_d;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  </snc>
  <snc mrk="period.0a.MAT">
    <uzo tip="fak">MAT</uzo>
    <subsnc mrk="period.0a.funkcio">
      <fnt><bib>MatVort</bib></fnt>
      <dif>
        <klr>(p.p. reela <ref cel="funkci.0o.MAT">funkcio</ref>)</klr>
        Akceptanta almena&ubreve; unu
        <ref cel="period.0o.funkcio"><tld/>on <sncref/></ref>.
      </dif>
      <trd lng="de">periodische<klr tip="amb"> (Funktion)</klr></trd>
      <trd lng="en">periodic[al]<klr tip="ind"> (function)</klr></trd>
      <trd lng="fr"><klr tip="ind">(fonction) </klr>p&eacute;riodique</trd>
      <trd lng="hu">periodikus<klr tip="ind"> (f&uuml;ggv&eacute;ny)</klr></trd>
      <trd lng="ru">&c_p;&c_je;&c_r;&c_i;&c_o;&c_d;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_a;&c_ja;<klr tip="amb"> (&c_f;&c_u;&c_n;&c_k;&c_c;&c_i;&c_ja;)</klr></trd>
    </subsnc>
    <subsnc mrk="period.0a.frakcio">
      <fnt><bib>MatTerm</bib><lok>p. 9</lok></fnt>
      <ref tip="vid" cel="frakci.pozicia0o">pozicia frakcio.</ref>
    </subsnc>
  </snc>
  <snc>
    <dif>
      Karakterizata per <tld/>oj 3:
      <ekz>
        <tld/>a stilo.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">periodisch</trd>
  <trdgrp lng="fr">
    <trd>p&eacute;riodique</trd>
  </trdgrp>
  <trd lng="nl">periodiek</trd>
</drv>

<drv mrk="period.0ajho">
  <kap><tld/>a&jcirc;o</kap>
  <snc>
    <uzo tip="fak">TIP</uzo>
    <dif>
      Publikiga&jcirc;o, kies sinsekvaj partoj, numeritaj kaj datitaj, <tld/>e
      aperas por ne anta&ubreve;difinita tempo kaj ofte kun fiksaj rubrikoj
      verkitaj de diversaj a&ubreve;toroj.
    </dif>
    <ekz>
      la nomon de la <tld/>a&jcirc;o kutime sekvas la numero de la jar-volumo
      <fnt><bib>Dan&gcirc;Lng</bib>, <lok>Atentigo de la 2a eldono</lok></fnt>
    </ekz>
    <ref tip="super" cel="seri.0ajho">seria&jcirc;o</ref>
    <refgrp tip="sub">
      <ref cel="bulten.0o">bulteno</ref>,
      <ref cel="gazet.0o">gazeto</ref>,
      <ref cel="leter.inform0o">informletero</ref>,
      <ref cel="jar.0libro">jarlibro</ref>,
      <ref cel="jxurna.0o">&jcirc;urnalo</ref>,
      <ref cel="magazin.0o">magazino</ref>,
      <ref cel="leter.novajx0o">nova&jcirc;letero</ref>,
      <ref cel="revu.0o">revuo</ref>.
    </refgrp>
    <refgrp tip="prt">
      <ref cel="kolekt.jar0o">jarkolekto</ref>,
      <ref cel="kajer.0o">kajero</ref>,
      <ref cel="numer.0o">numero</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Periodikum</trd>
  <trd lng="fr">p&eacute;riodique<klr> (publication)</klr></trd>
  <trdgrp lng="hu">
    <trd>foly&oacute;irat</trd>,
    <trd>periodika</trd></trdgrp>
  <trd lng="nl">tijdschrift</trd>
  <trd
  lng="ru">&c_p;&c_je;&c_r;&c_i;&c_o;&c_d;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_o;&c_je;
  &c_i;&c_z;&c_d;&c_a;&c_n;&c_i;&c_je;</trd>
</drv>
</art>
