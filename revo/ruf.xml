<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
    <rad>ruf</rad>/a <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="ruf.0o">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Havanta koloron ru&gcirc;e flavan:
      <ekz>
        viro malalta, flame rufa, kun elstara kojnodento
        <fnt>
          <aut>M. A. Bulgakov, trad. Sergio Pokrovskij</aut>,
          <vrk><url ref="http://www.esperanto.mv.ru/MM/19.html">La
          majstro kaj Margarita (fragmentoj)</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">roux</trd>
  <trdgrp lng="sk">
    <trd>hrdzavý</trd>,
    <trd>ryšavý</trd>
  </trdgrp>
</drv>

<drv mrk="ruf.0ulo">
  <kap><tld/>ulo</kap>
    <snc> 
    <dif>
      Viro rufhara:
      <ekz>
        la rufulo rigardis &scirc;in per duonfermitaj okuloj
        <fnt>
          <aut>M. A. Bulgakov, trad. Sergio Pokrovskij</aut>,
          <vrk><url ref="http://www.esperanto.mv.ru/MM/19.html">La
          majstro kaj Margarita (fragmentoj)</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">roux</trd>
</drv>

<drv mrk="ruf.0ulino">
  <kap><tld/>ulino</kap>
    <snc> 
    <dif>
      Ino rufhara:
      <ekz>
        li e&ccirc; regule renkontadas Katarinan, rufulinon el la dua jaro
        <fnt>
          <aut>Sten Johansso</aut>,
          <vrk>Marina</vrk>,
          <lok>p. 72</lok>
        </fnt>
      </ekz>.
    </dif>
  </snc>
  <trd lng="fr">rousse</trd>
</drv>
</art>

