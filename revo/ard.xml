<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>3</ofc>
  <rad>ard</rad>/i
</kap>
<drv mrk="ard.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="ard.0i.brulegi">
    <dif>
      Esti blanke varma, varmega, brulegi:
      <ekz>
        fajro, fero <tld/>as.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="inkand.0i">inkandeski</ref>,
      <ref cel="flam.0i">flami</ref>.
    </refgrp>
  </snc>
  <snc mrk="ard.0i.fervori">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Esti tre pasia, tre fervora, ekstreme viveca:
      <ekz>
        koro, okuloj <tld/>as;
      </ekz>
      <ekz>
        febra volo <tld/>as en liaj vejnoj;
      </ekz>
      <ekz>
        interna kolero, &gcirc;ojo <tld/>is sur liaj vangoj.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="bol.0i">boli</ref>,
      <ref cel="febr.0i.anime">febri</ref>,
      <ref cel="fervor.0i">fervori</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="fr">
    <trd>&ecirc;tre <ind>ardent</ind></trd>,
    <trd>&ecirc;tre <ind>incandescent</ind></trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_y;&c_l;&c_a;&c_t;&c_mol;</trd>
  <trd lng="sv">gl&ouml;da</trd>
</drv>

<drv mrk="ard.0a">
  <kap><tld/>a</kap>
  <snc mrk="ard.0a.varmega">
    <dif>
      Varmega, brulanta:
      <ekz>
        <tld/>a fajro, suno, karbeto.
      </ekz>
    </dif>
    <ref tip="vid" cel="inkand.0a">inkandeska.</ref>
  </snc>
  <snc mrk="ard.0a.fervora">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Pasia, fervora; tre viveca:
      <ekz>
        <tld/>a &ccirc;evalo, atako, intereso, atento, deziro;
      </ekz>
      <ekz>
        <tld/>aj paroloj;
      </ekz>
      <ekz>
        homo <tld/>a en la diskutado.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="flam.0a.anime">flama</ref>,
      <ref cel="varm.0ega.anime">varmega</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="fr">
    <trd>ardent</trd>,
    <trd>chaud<klr tip="ind"> (de temp&eacute;rament)</klr></trd>,
    <trd>chauff&eacute; &agrave; blanc</trd>,
    <trd>incandescent</trd>,
    <trd>passionn&eacute;</trd>,
    <trd>torride</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_p;&c_y;&c_l;&c_a;&c_ju;&c_shch;&c_i;&c_j;</trd>,
    <trd>&c_r;&c_a;&c_s;&c_k;&c_a;&c_l;&c_jo;&c_n;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_p;&c_y;&c_l;&c_k;&c_i;&c_j;</trd>,
    <trd>&c_s;&c_t;&c_r;&c_a;&c_s;&c_t;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trd lng="sv">gl&ouml;dande</trd>
</drv>

<drv mrk="ard.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc>
    <dif>
      Io <tld/>anta.
    </dif>
  </snc>
  <trd lng="sv">gl&ouml;d</trd>
</drv>

<drv mrk="ard.0eco">
  <kap><tld/>(ec)o</kap>
  <snc>
    <dif>
      Stato de tio, kio <tld/>as.
    </dif>
    <ref tip="vid" cel="inkand.0o">inkandesko;</ref>
    <refgrp tip="vid">
      <ref cel="entuzi.0o">entuziasmo</ref>,
      <ref cel="ekzalt">ekzalteco</ref>,
      <ref cel="fajr.0o.fervoro">fajro</ref>,
      <ref cel="fervor.0o">fervoro</ref>,
      <ref cel="flam.0o.fervoro">flamo</ref>,
      <ref cel="pasi.0o">pasio</ref>,
      <ref cel="verv.0o">vervo</ref>,
      <ref cel="varm.0o.fervoro">varmo</ref>,
      <ref cel="vigl">vigleco</ref>.
    </refgrp>
    <trdgrp lng="ru">
      <trd>&c_p;&c_y;&c_l;</trd>,
      <trd>&c_zh;&c_a;&c_r;</trd>,
      <trd>&c_r;&c_v;&c_je;&c_n;&c_i;&c_je;</trd>
    </trdgrp>
  </snc>
  <trdgrp lng="fr">
    <trd>ardeur</trd>,
    <trd>incandescence</trd>
  </trdgrp>
</drv>

<drv mrk="ard.0ejo">
  <kap><tld/>ejo</kap>
  <uzo tip="stl">ARK</uzo>
  <snc>
    <dif>
      <tld lit="A"/>anta fajrejo:
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>ejo de agitado.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="fokus.0o">fokuso</ref>,
      <ref cel="centr.0o">centro</ref>,
      <ref cel="kern.0o">kerno</ref>,
      <ref cel="brul">brulejo</ref>.
    </refgrp>
  </snc>
</drv>

<drv mrk="ard.0ilo">
  <kap><tld/>ilo</kap>
  <uzo tip="fak">TEK</uzo>
  <snc>
    <ref tip="dif" cel="gas.0mufo">gasmufo.</ref>
  </snc>
  <trd lng="fr">manchon<klr tip="ind"> (de flamme)</klr></trd>
</drv>

<drv mrk="ard.blank0a">
  <kap>blank<tld/>a</kap>
  <snc>
    <dif>
      Blanka pro <tld/>o.
    </dif>
  </snc>
  <trd lng="fr">chauff&eacute; &agrave; blanc</trd>
</drv>

<drv mrk="ard.karb0ajxo">
  <kap>karb<tld/>a&jcirc;o</kap>
  <uzo tip="stl">ARK</uzo>
  <fnt><bib>PV</bib></fnt>
  <snc>
    <ref tip="dif" cel="bragx.0o">bra&gcirc;o.</ref>
  </snc>
</drv>
</art>
