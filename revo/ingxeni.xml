<vortaro>
<art mrk="$Id: ingxeni.xml,v 1.12 2025/01/09 08:33:53 revo Exp $">
<kap>
  <rad>in&gcirc;eni</rad>/a <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="ingxeni.0a">
  <kap><tld/>a</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="ingxeni.0a.KOMUNE">
    <dif>
      <klr>(iu)</klr> <ref tip="dif" cel="invent.0ema">Inventema</ref>, <ref tip="dif"
      cel="trov.el0ema">eltrovema</ref>:
      <!--
      <ref tip="super" cel="sagac.0a">Sagaca</ref>, ema inventi
      neatenditajn solvojn a&ubreve; rimedojn:
      -->
      <ekz>
        li estis inteligenta, malsamspece <tld/>a, kaj sciis mildavo&ccirc;e tamen atentoveke
        paroli pri interesaj aferoj
        <fnt>
          <bib>SkandalJozef</bib>
          <lok>Konfeso de la Potifar-edzino</lok>
        </fnt>;
      </ekz>
      <ekz>
        &leftquot;La <tld/>a hidalgo <nom>Don Quijote de la
        Mancha</nom>&rightquot;
        <fnt><bib>DonKihxoto</bib></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="sagac.0a">sagaca</ref>,
      <ref cel="geni.0a">genia</ref>
    </refgrp>
  </snc>
  <snc mrk="ingxeni.0a.ideo">
    <dif>
      <klr>(io)</klr> Originala, lerta, sprita ideo (solvo de problemo ktp):
      <ekz>
        <tld/>a uzo de konkreta esprimrimedo
        <fnt>
          <bib>KFl</bib>
          <lok>III. Atomoj de evoluo</lok>
        </fnt>;
      </ekz>
      <ekz>
        tiu <tld/>a struktura&jcirc;o ne rivelas tamen diferencon inter praaj enkavernaj
        desegna&jcirc;oj kaj tiuj de <nom>Picasso</nom>
        <fnt>
          <bib>KFl</bib>
          <lok>III. Atomoj de evoluo</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>aj instrumentoj por termezurado kaj vojkonstruo
        <fnt>
          <bib>Monato</bib>
          <aut>Garbhan Macaoidh</aut>
          <vrk><url ref="&Monato;/2004/008467.html"
              >Kampoj de Soria Antonio Machado, universala poeto</url></vrk>
          <lok>2004</lok>
        </fnt>;
      </ekz>
      <ekz>
        volbo, <tld/>e ornamita per mirinda mozaiko
        <fnt>
          <bib>LOdE</bib>
          <lok>2000, No 1 (63)</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="bril.0a.elstara">brila</ref>
      <!-- ideri&ccirc;a, elstara? -->
    </refgrp>
    <trd lng="de">ausget&uuml;ftelt</trd>
  </snc>
  <trdgrp lng="be">
    <trd>&c_v;&c_y;&c_n;&c_a;&c_h;&c_o;&c_d;&c_l;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_d;&c_a;&c_s;&c_mol;&c_c;&c_ib;&c_p;&c_n;&c_y;</trd>,
    <trd>&c_k;&c_je;&c_m;&c_l;&c_ib;&c_v;&c_y;</trd>
  </trdgrp>
  <trd lng="de">einfallsreich</trd>
  <trd lng="fr">ing&eacute;nieux</trd>
  <trdgrp lng="hu">
    <trd>elm&eacute;s</trd>,
    <trd>lelem&eacute;nyes</trd>,
    <trd>tal&aacute;l&eacute;kony</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#21109;&#24847;&#24037;&#22827;&#12395;&#23500;&#12435;&#12384;  <pr>&#12381;&#12358;&#12356;&#12367;&#12405;&#12358;&#12395;&#12392;&#12435;&#12384;</pr></trd>,
    <trd>&#21033;&#30330;&#12394;  <pr>&#12426;&#12399;&#12388;&#12394;</pr></trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>sagaz</trd>,
    <trd>engenhoso</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_i;&c_z;&c_o;&c_b;&c_r;&c_je;&c_t;&c_a;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_h;&c_i;&c_t;&c_r;&c_o;&c_u;&c_m;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_v;&c_i;&c_n;&c_a;&c_h;&c_ib;&c_d;&c_l;&c_i;&c_v;&c_i;&c_j;</trd>,
    <trd>&c_s;&c_p;&c_r;&c_i;&c_t;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_u;&c_m;&c_ib;&c_l;&c_i;&c_j;</trd>,
    <trd>&c_m;&c_a;&c_j;&c_s;&c_t;&c_je;&c_r;&c_n;&c_i;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#29420;&#21019;&#24615; <pr>d&uacute;chu&agrave;ngx&igrave;ng</pr></trd>,
    <trd>&#20743; <pr>xu&amacron;n</pr></trd>,
    <trd>&#24039;&#22937; <pr>qi&#462;omi&agrave;o</pr></trd>,
    <trd>&#26426;&#26234; <pr>j&imacron;zh&igrave;</pr></trd>,
    <trd>&#22937; <pr>mi&agrave;o</pr></trd>,
    <trd>&#39640;&#22937; <pr>g&amacron;omi&agrave;o</pr></trd>
  </trdgrp>
</drv>

<drv mrk="ingxeni.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="ingxeni.0o.KOMUNE">
    <dif>
      Inventemo, eltrovemo:
      <ekz>
        kiom da diplomata <tld/>o oni devas disipi por montri sin lojala kortegano
        <fnt>
          <bib>SkandalJozef</bib>
          <lok>Potifar, la bonkorulo</lok>
        </fnt>;
      </ekz>
      <ekz>
        <nom>Nina</nom>, pri kiu jam iris la diro, impresas &scirc;ekspireske lerta &jcirc;ongli per vortoj kaj
        &scirc;ia <tld/>o similas tiun
        <fnt>
          <bib>LOdE</bib>
          <lok>2000, No 2 (64)</lok>
        </fnt>;
      </ekz>
      <ekz>
        li sentis sin en falsa pozicio anta&ubreve; &scirc;i,
        senigita je <tld/>o por &scirc;in konvinki
        <fnt>
          <aut>V. Catal&agrave;, trad. J. Ventura i Freixas</aut>,
          <vrk>Soleco</vrk>,
          <lok>1967</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_v;&c_y;&c_n;&c_a;&c_h;&c_o;&c_d;&c_l;&c_ib;&c_v;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>,
    <trd>&c_d;&c_a;&c_s;&c_mol;&c_c;&c_ib;&c_p;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>,
    <trd>&c_d;&c_o;&c_s;&c_mol;&c_c;&c_ib;&c_p;</trd>,
    <trd>&c_k;&c_je;&c_m;&c_l;&c_ib;&c_v;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="de">Einfallsreichtum</trd>
  <trdgrp lng="fr">
    <trd>ing&eacute;niosit&eacute;</trd>,
    <trd>inventivit&eacute;</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>elm&eacute;ss&eacute;g</trd>,
    <trd>lelem&eacute;nyess&eacute;g</trd>,
    <trd>tal&aacute;l&eacute;konys&aacute;g</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_i;&c_z;&c_o;&c_b;&c_r;&c_je;&c_t;&c_a;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_h;&c_i;&c_t;&c_r;&c_o;&c_u;&c_m;&c_i;&c_je;</trd>
  </trdgrp>
  <trd lng="zh">&#21019;&#24847; <pr>chu&agrave;ngy&igrave;</pr></trd>
</drv>
