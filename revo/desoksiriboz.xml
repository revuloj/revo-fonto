<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: desoksiriboz.xml,v 1.3 2024/09/24 12:53:30 afido Exp $">
    <kap>
      <rad>desoksiriboz</rad>/o,
      <var><kap><rad var="z">dezoksiriboz</rad>/o</kap></var>
    </kap>

<drv mrk="desoksiriboz.0o">
  <kap><tld/>o, <var><kap><tld var="z"/>o</kap></var></kap>
  <uzo tip="fak">KEM</uzo><uzo tip="fak">FIZL</uzo>
  <snc>
    <dif>
      <frm>C<sub>5</sub>H<sub>10</sub>O<sub>4</sub></frm>,
      <ref tip="super" cel="pentoz.0o">pentozo</ref> en kiu kompare
      kun <ref cel="riboz.0o">ribozo</ref> anstata&ubreve; la OH-grupo &ccirc;e la dua
      C-atomo trovi&gcirc;as hidrogenatomo; &gcirc;i trovi&gcirc;as i.a. en
      <ref tip="malprt" cel="acid.desoksiribonuklea0o">DNA</ref>:
      <ekz>
        la sukero en la nukleotidoj de DNA estas <tld/>o anstata&ubreve; ribozo
        <fnt>
          <bib>Monato</bib>
          <vrk>VIVO: Riboj</vrk>
        </fnt>;
      </ekz>
      <ekz>
        nukleaj acidoj <klr>[&#8230;]</klr> konstrui&gcirc;as el fosfata acido, el deriva&jcirc;oj de
        pirimidino kaj purino kaj <klr>[&#8230;]</klr> molekulo de sukero (ribozo,
        <tld var="z"/>o)
        <fnt>
          <vrk><url ref="http://www.eventoj.hu/steb/biologio/enkond-fokuso/f874-p08.htm">Enkonduko
          en la biologion</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="de">Desoxyribose</trd>
    <trd lng="en">deoxyribose</trd>
    <trd lng="fr">d&eacute;soxyribose</trd>
    <trd lng="ru">&c_D;&c_je;&c_z;&c_o;&c_k;&c_s;&c_i;&c_r;&c_i;&c_b;&c_o;&c_z;&c_a;</trd>
  </snc>
  <trd lng="be">&c_d;&c_e;&c_z;&c_o;&c_k;&c_s;&c_ib;&c_r;&c_y;&c_b;&c_o;&c_z;&c_a;</trd>
  <trd lng="zh">&#x812B;&#x6C27;&#26680;&#x7CD6; <pr>tu&#x14D;y&#x1CE;ngh&#xE9;t&#xE1;ng</pr></trd>
</drv>

  </art>

