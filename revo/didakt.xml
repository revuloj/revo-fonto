  <trdgrp lng="uk">
    <trd>&#x434;&#x438;&#x434;&#x430;&#x43A;&#x442;&#x438;&#x447;&#x43D;&#x438;&#x439;</trd>,
    <trd>&#x43F;&#x43E;&#x432;&#x447;&#x430;&#x43B;&#x44C;&#x43D;&#x438;&#x439;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x597D;&#x6559;&#x8AA8; <pr>h&#x1CE;oji&#xE0;ohu&#xEC;</pr></trd>,
    <trd>&#x6709;&#x6559;&#x80B2;&#x610F;&#x4E49; <pr>y&#x1D2;uji&#xE0;oy&#xF9;y&#xEC;y&#xEC;</pr></trd>
