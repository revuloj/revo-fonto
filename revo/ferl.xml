<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: ferl.xml,v 1.21 2025/06/01 14:00:22 revo Exp $">
<kap>
  <rad>ferl</rad>/i
  <fnt><bib>PVEF</bib></fnt>
</kap>
<drv mrk="ferl.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <uzo tip="fak">MAR</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="volv.0i">Volvi</ref> velon kaj alligi &gcirc;in sur jardon:
      <ekz>
        kiam oni ne uzas la kvadratajn velojn, ili estas <tld/>ataj sur la jardo
        <fnt>
          <aut>M. Rollet de l'Isle k.a.</aut>
          <vrk><url ref="https://www.esperanto.mv.ru/MaristaTerminaro/MaristaTerminaro.html"
              >Provo de Marista Terminaro</url></vrk>
          <lok>V. &mdash; Manovro De La Veloj</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_z;&c_d;&c_y;&c_m;&c_a;&c_c;&c_mol;
    <ind>&c_v;&c_je;&c_t;&c_r;&c_a;&c_z;&c_ib;</ind></trd>,
    <trd>&c_s;&c_k;&c_r;&c_u;&c_ch;&c_v;&c_a;&c_c;&c_mol;
    <ind>&c_v;&c_je;&c_t;&c_r;&c_a;&c_z;&c_ib;</ind></trd>
  </trdgrp>
  <trd lng="ca">aferrar <klr tip="amb">(una vela)</klr></trd>
  <trdgrp lng="cs">
    <trd>ohnout</trd>,
    <trd>podkasat</trd>,
    <trd>st&aacute;hnout plachtu</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>festmachen</trd>,
    <trd>festzurren</trd>,
    <trd>einziehen</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>furl</trd>,
    <trd>roll up</trd>,
    <trd>take in</trd>
  </trdgrp>
  <trd lng="es">recoger velas<klr tip="amb"> (at&aacute;ndolas en la
  verga)</klr></trd>
  <trd lng="fr">serrer<klr tip="ind"> (une voile)</klr></trd>
  <trdgrp lng="hu">
    <trd>bevon<klr tip="ind"> (vitorl&aacute;t)</klr></trd>,
    <trd>felteker<klr tip="ind"> (vitorl&aacute;t)</klr></trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#12383;&#12383;&#12416;</trd>,
    <trd>&#32302;&#24070;&#12377;&#12427;  <pr>&#12385;&#12386;&#12411;&#12377;&#12427;</pr></trd>
  </trdgrp>
  <trd lng="pl">zwin&aogonek;&cacute;  <ind>&zdot;agle</ind></trd>
  <trdgrp lng="pt">
    <trd>ferrar velas</trd>,
    <trd>colher velas</trd>,
    <trd>amarrar velas</trd>
  </trdgrp>
  <trd lng="ru">&c_u;&c_b;&c_i;&c_r;&c_a;&c_t;&c_mol; &c_p;&c_a;&c_r;&c_u;&c_s;&c_a;</trd>
  <trdgrp lng="sk">
    <trd>podkasa&tcaron;</trd>,
    <trd>stiahnu&tcaron; plachtu</trd>
  </trdgrp>
  <trd lng="uk">&c_z;&c_g;&c_o;&c_r;&c_t;&c_a;&c_t;&c_i; &c_v;&c_ib;&c_t;&c_r;&c_i;&c_l;&c_a;</trd>
</drv>

<drv mrk="ferl.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Ago <tld/>i kaj rezulto de tiu ago.
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_z;&c_mol;&c_n;&c_ja;&c_c;&c_mol;&c_c;&c_je;
    <ind>&c_v;&c_je;&c_t;&c_r;&c_a;&c_z;&c_ja;&c_w;</ind></trd>,
    <trd>&c_s;&c_k;&c_r;&c_u;&c_ch;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_je;
    <ind>&c_v;&c_je;&c_t;&c_r;&c_a;&c_z;&c_ja;&c_w;</ind></trd>
  </trdgrp>
  <trdgrp lng="ca">
    <trd>aferrament</trd>,
    <trd>aferrada</trd>
  </trdgrp>
  <trd lng="cs">podkas&aacute;n&iacute;</trd>
  <trdgrp lng="de">
    <trd>Festmachen</trd>,
    <trd>Festzurren</trd>,
    <trd>Einziehen</trd>
  </trdgrp>
  <trd lng="hu">vitorlabevon&aacute;s</trd>
  <trd lng="ja">&#32302;&#24070;  <pr>&#12375;&#12421;&#12367;&#12399;&#12435;</pr></trd>
  <trd lng="pl">zwini&eogonek;cie  <ind>&zdot;agli</ind></trd>
  <trd lng="sk">podkasanie</trd>
  <trd lng="uk">&c_z;&c_g;&c_o;&c_r;&c_t;&c_a;&c_n;&c_n;&c_ja; &c_v;&c_ib;&c_t;&c_r;&c_i;&c_l;</trd>
</drv>
</art>
