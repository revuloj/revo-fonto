<kap>
  <rad>perpleks</rad>/a
<fnt><bib>PVEF</bib></fnt></kap>
<drv mrk="perple.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      <ref cel="sxance.0igxi.PSI">&Scirc;anceli&gcirc;a</ref> pro senkonsileco, 
      <ref cel="hezit.0i">hezitanta</ref> inter pluraj kontra&ubreve;aj decidoj:
      <ekz>
        la maljuna hundo <tld/>e saltis jen unuflanken jen aliflanken
        <fnt>
          <bib>Kiso</bib>
        </fnt>;
      </ekz>
      <ekz>
        oni devus a&ubreve;skulti, per kia <tld/>a tono li diris tion, proksimume kvaza&ubreve; li
        volus diri: &leftquot;kiiio? vi ne kredas, ke ekzistas mara akvo?&rightquot;
        <fnt>
          <bib>Mortul&Scirc;ip</bib>
        </fnt>;
      </ekz>
      <ekz>
        &Scirc;ia korpo, la ebriiga tu&scirc;apudeco de &Scirc;iaj ina&jcirc;oj, <klr>[&#8230;]</klr> &Scirc;ia varme mola
        polmo &ndash; &ccirc;io &ccirc;i min igis tut<tld/>a
        <fnt>
          <bib>SkandalJozef</bib>
        </fnt>;
      </ekz>
      <ekz>
        &leftquot;&ccirc;u &ccirc;io estas en ordo?&rightquot; sed neniu respondo venis <klr>[&#8230;]</klr> li staris
        <klr>[&#8230;]</klr> kaj rigardis <tld/>e
        <fnt>
          <bib>ChR</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="dub.0i">dubi</ref>,
      <ref cel="konfuz.0i">konfuzi</ref>,
      <ref cel="embara.0i">embarasi</ref>,
      <ref cel="konste1.0i">konsterni</ref>
    </refgrp>
  </snc>
  <rim>
    La&#365; <fnt><bib>BL</bib></fnt>: Anka&#365; eblas diri <ke>konfuzita</ke>, <ke>dubanta</ke>, <ke>senkonsila</ke>.
  </rim>

  <trdgrp lng="be">
    <trd>&c_r;&c_a;&c_z;&c_g;&c_u;&c_b;&c_l;&c_je;&c_n;&c_y;</trd>,
    <trd>&c_z;&c_mol;&c_d;&c_z;&c_ib;&c_w;&c_l;&c_je;&c_n;&c_y;</trd>,
    <trd>&c_z;&c_mol;&c_b;&c_ja;&c_n;&c_t;&c_e;&c_zh;&c_a;&c_n;&c_y;</trd>,
    <trd>&c_a;&c_sh;&c_a;&c_l;&c_o;&c_m;&c_l;&c_je;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="ca">perplex</trd>
  <trdgrp lng="cs">
    <trd>perplex</trd>,
    <trd>perplexn&iacute;</trd>,
    <trd>pomaten&yacute;</trd>,
    <trd>zara&zcaron;en&yacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>perplex</trd>,
    <trd>best&uuml;rzt</trd>,
    <trd>verdutzt</trd>,
    <trd>unschl&uuml;ssig</trd>,
    <trd>ratlos</trd>,
    <trd>fassungslos</trd>,
    <trd>hin und her gerissen</trd>
  </trdgrp>
  <trd lng="es">perplejo, -a</trd>
  <trdgrp lng="fr">
    <trd>d&eacute;sorient&eacute;</trd>,
    <trd>ind&eacute;cis</trd>,
    <trd>perplexe</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>zavarodott</trd>,
    <trd>hat&aacute;rozatlan</trd>,
    <trd>bizonytalankod&oacute;</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#24403;&#24785;&#12375;&#12383;  <pr>&#12392;&#12358;&#12431;&#12367;&#12375;&#12383;</pr></trd>,
    <trd>&#36884;&#26041;&#12395;&#12367;&#12428;&#12383;  <pr>&#12392;&#12411;&#12358;&#12395;&#12367;&#12428;&#12383;</pr></trd>,
    <trd>&#12414;&#12372;&#12388;&#12356;&#12383;</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>perplex</trd>,
    <trd>verbluft</trd>,
    <trd>besluiteloos</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>bezradny</trd>,
    <trd>zak&lstroke;opotany</trd>,
    <trd>zmieszany</trd>
  </trdgrp>
  <trd lng="pt">perplexo</trd>
  <trdgrp lng="ro">
    <trd>neajutorat</trd>,
    <trd>confuz</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_r;&c_a;&c_s;&c_t;&c_je;&c_r;&c_ja;&c_n;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_n;&c_je;&c_d;&c_o;&c_u;&c_m;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_o;&c_z;&c_a;&c_d;&c_a;&c_ch;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_o;&c_sh;&c_je;&c_l;&c_o;&c_m;&c_l;&c_jo;&c_n;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>pom&auml;ten&yacute;</trd>,
    <trd>protizmyseln&yacute;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_s;&#1087;&c_a;&#1085;&c_t;&c_je;&#1083;&c_i;&c_ch;&c_je;&#1085;&c_i;&c_j;</trd>,
    <trd>&#1087;&c_r;&c_i;&c_g;&#1086;&#1083;&#1086;&#1084;&c_sh;&c_je;&#1085;&c_i;&c_j;</trd>,
    <trd>&c_r;&#1086;&c_z;&c_g;&c_u;&c_b;&#1083;&c_je;&#1085;&c_i;&c_j;</trd>,
    <trd>&c_s;&c_t;&c_u;&c_r;&c_b;&#1086;&c_v;&c_a;&#1085;&c_i;&c_j;</trd>,
    <trd>&c_z;&c_d;&c_i;&c_v;&#1086;&c_v;&c_a;&#1085;&c_i;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#35060;&#22238; <pr>p&#233;ihu&#237;</pr></trd>,
    <trd>&#25163;&#36275;&#26080;&#25514; <pr>sh&#466;uz&#250;w&#250;cu&#242;</pr></trd>,
    <trd>&#25163;&#36275;&#28961;&#25514; <pr>sh&#466;uz&#250;w&#250;cu&#242;</pr></trd>
  </trdgrp>
</drv>

<drv mrk="perple.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      <ref cel="embara.0o.FIG">Embaraso</ref> anta&ubreve; neatendita situacio, 
      malfacile solvebla afero:
      <ekz>
        &leftquot;vi misa&ubreve;dis, Jano,&rightquot; &scirc;i diris per tre stranga vo&ccirc;o, kiu sendis la edzon al
        profundegoj de <tld/>o
        <fnt>
          <bib>ChM</bib>
        </fnt>;
      </ekz>
      <ekz>
        en sia <tld/>o <nom>Margarita</nom> ekkriis tiom la&ubreve;te, ke al &scirc;i turni&gcirc;is la rigardoj de
        homoj pasantaj
        <fnt>
          <bib>MkM</bib>
        </fnt>;
      </ekz>
      <ekz>
        la palataligitaj <ctl>&ccirc;ji, &scirc;ji</ctl> estas skribataj <ctl>qi,
        xi</ctl>, kiuj ka&ubreve;zas senfinan <tld/>on al ne&ccirc;inoj
        <fnt>
          <aut>Yamasaki Seik&ocirc;</aut>: <vrk>Transskribo de la
          &ccirc;ina</vrk>,
          <bib>Monato</bib><lok>jaro 1999a, numero 4a, p. 20a</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_r;&c_a;&c_z;&c_g;&c_u;&c_b;&c_l;&c_je;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>,
    <trd>&c_z;&c_a;&c_m;&c_ja;&c_sh;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
    <trd>&c_z;&c_mol;&c_d;&c_z;&c_ib;&c_w;&c_l;&c_je;&c_n;&c_mol;&c_n;&c_je;</trd>
  </trdgrp>
  <trd lng="ca">perplexitat</trd>
  <trd lng="cs">zmatek</trd>
  <trdgrp lng="de">
    <trd>Best&uuml;rzung</trd>,
    <trd>Ratlosigkeit</trd>
  </trdgrp>
  <trd lng="es">perplejidad</trd>
  <trdgrp lng="fr">
    <trd>d&eacute;sarroi</trd>,
    <trd>irr&eacute;solution</trd>,
    <trd>perplexit&eacute;</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>zavar</trd>,
    <trd>hat&aacute;rozatlans&aacute;g</trd>,
    <trd>bizonytalankod&aacute;s</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#24403;&#24785;  <pr>&#12392;&#12358;&#12431;&#12367;</pr></trd>,
    <trd>&#22256;&#24785;  <pr>&#12371;&#12435;&#12431;&#12367;</pr></trd>
  </trdgrp>
  <trd lng="nl">verbazing</trd>
  <trd lng="pl">zak&lstroke;opotanie</trd>
  <trd lng="ro">perplexitate</trd>
  <trdgrp lng="ru">
    <trd>&c_r;&c_a;&c_s;&c_t;&c_je;&c_r;&c_ja;&c_n;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_z;&c_a;&c_m;&c_je;&c_sh;&c_a;&c_t;&c_je;&c_l;&c_mol;&c_s;&c_t;&c_v;&c_o;</trd>,
    <trd>&c_n;&c_je;&c_d;&c_o;&c_u;&c_m;&c_je;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_s;&c_m;&c_ja;&c_t;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
  <trd lng="sk">zm&auml;tok</trd>
  <trd lng="zh">&#22823;&#24656;&#24908; <pr>d&#224;ik&#466;nghu&#257;ng</pr></trd>
</drv>

<drv mrk="perple.0igxi">
  <kap>
    <tld/>i&gcirc;i
  </kap>
  <snc>
    <dif>
      Fari&gcirc;i <tld/>a:
      <ekz>
        la servisto, kiu anta&ubreve; la fulmotondro estis aran&gcirc;anta la tablon por la
        prokuratoro, ial <tld/>i&gcirc;is sub ties rigardo, konsternite, &ccirc;u li faris ion
        mise
        <fnt>
          <bib>MkM</bib>
        </fnt>;
      </ekz>
      <ekz>
        ofte dum batalo maldika viro, sunbrunigita, mar&scirc;as flanke de palha&ubreve;ta ri&ccirc;ulo
        trodika, kaj vidas lin malfacile spiri kaj <tld/>i&gcirc;i
        <fnt>
          <bib>Rsp</bib>
        </fnt>;
      </ekz>
      <ekz>
        ili efektive iom <tld/>i&gcirc;as, &ccirc;ar ili nun tute perdis la fadenon
        <fnt>
          <bib>Mortul&Scirc;ip</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
    <refgrp tip="vid">
      <ref cel="embara.0igxi.FIG">embarasi&gcirc;i<sncref/></ref>,
      <ref cel="konfuz.0igxi.perpleksigxi">konfuzi&gcirc;i<sncref/></ref>,
      <ref cel="konste1.0igxi">konsterni&gcirc;i</ref>
    </refgrp>
    <trdgrp lng="be">
      <trd>&c_r;&c_a;&c_z;&c_g;&c_u;&c_b;&c_l;&c_ib;&c_v;&c_a;&c_c;&c_c;&c_a;</trd>,
      <trd>&c_z;&c_mol;&c_d;&c_z;&c_ib;&c_w;&c_l;&c_ja;&c_c;&c_c;&c_a;</trd>
    </trdgrp>
<trdgrp lng="de">
    <trd><ind>unsicher</ind> werden</trd>,
    <trd>den <ind>Faden</ind> verlieren</trd>,
    <trd>die <ind>Fassung</ind> verlieren</trd>,
  </trdgrp>
  <trd lng="pl">by&cacute;  <ind>zak&lstroke;opotanym</ind></trd>
  <trd lng="ro">s&abreve; fie  <ind>confuz</ind></trd>
  <trdgrp lng="zh">
    <trd>&#27785;&#19981;&#20303;&#27668; <pr>ch&#233;nb&#249;zh&#249;q&#236;</pr></trd>,
    <trd>&#27785;&#19981;&#20303;&#27683; <pr>ch&#233;nb&#249;zh&#249;q&#236;</pr></trd>,
    <trd>&#36855;&#24792; <pr>m&#237;w&#462;ng</pr></trd>
  </trdgrp>
</drv>



