<art mrk="$Id: mandal.xml,v 1.16 2024/01/25 20:10:34 revo Exp $">
<kap>
  <rad>mandal</rad>/o <fnt><bib>NePiv</bib></fnt>
</kap>

<drv mrk="mandal.0o">
  <kap><tld/>o</kap>
  <snc mrk="mandal.0o.BUD">
    <uzo tip="fak">BUD</uzo>
    <dif>
      Geometria kolora <ref tip="super" cel="desegn.0o.desegnajxo">desegno</ref> simbolanta la
      mondon,  uzata kiel meditilo en va&gcirc;rajana <ref tip="malprt" cel="buda.0ismo">budaismo</ref>:
      <ekz>
        <tld/>o estas kosma ligilo kaj helpilo dum meditado kaj 
        koncentri&gcirc;o
        <fnt>
          <aut>H. Deceuninck</aut>,
          <vrk><url ref="http://members.tripod.com/persone/NEWAGE/terminaro.html">Glosaro
          Nova Tempo</url></vrk>,
          <lok>1999-05</lok>
        </fnt>;
      </ekz>
      <ekz>
        simbole la pentranto metu sin en la centron de la <tld/>o
        <fnt>
          <aut>A. Ubik</aut>,
          <vrk>Mandalo</vrk>,
          <lok><url ref="http://www.esperanto.de/dej/asocio/nr04_04/kune0404_web.pdf">Kune
          2004, 4</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        por antikvaj litovoj pajlaj arta&jcirc;oj estis siaspeca <tld/>o simbole reprezentanta
        ceteran animan, e&ccirc; kosman ordon
        <fnt>
          <bib>Monato</bib>
          <aut>last</aut>
          <vrk><url ref="&Monato;/2014/011226.php">Pendantaj artaj pajla&jcirc;oj</url></vrk>
          <lok>2014</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="bg">&c_m;&c_a;&c_n;&c_d;&c_a;&c_l;&c_a;</trd>
  <trd lng="bo">&t_da;&t_ka;&t_yata;&t_gigu;&t_la;&t_tsheg;&t_-a;&t_kha;&t_naro;&t_ra;&t_tsheg;</trd>
  <trd lng="ca">mandala</trd>
  <trd lng="cs">mandala</trd>
  <trd lng="de">Mandala</trd>
  <trd lng="fa">&a_m;&a_A;&a_n;&a_d;&a_A;&a_l;&a_A;</trd>
  <trd lng="fr">mandala</trd>
  <trd lng="it">mandala</trd>
  <trd lng="nl">mandala</trd>
  <trd lng="pl">mandala<klr>(symbol)</klr></trd>     
  <trd lng="ro">mandala</trd>
  <trd lng="sk">mandala</trd>
  <trd lng="uk">&#x43C;&#x430;&#x43D;&#x434;&#x430;&#x43B;&#x430;</trd>
  <trdgrp lng="zh">
    <trd>&#x66FC;&#x837C;&#x7F57; <pr>m&#xE0;nt&#xFA;lu&#xF3;</pr></trd>,
    <trd>&#x66FC;&#x837C;&#x7F85; <pr>m&#xE0;nt&#xFA;lu&#xF3;</pr></trd>
  </trdgrp>
</drv>
</art>

