<art mrk="$Id$">
<kap>
  <rad>steradian</rad>/o
</kap>
<drv mrk="sterad.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
