  <rad>faktitiv</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="faktitiv.0o">
  <kap><tld/>o</kap>
  <snc mrk="faktitiv.0o.GRA">
    <uzo tip="fak">GRA</uzo>
    <dif>
      Verba <ref tip="super" cel="vocx.0o.GRA">vo&ccirc;o<sncref/></ref>
      montranta ke la subjekto delegas a&ubreve; lasas agon al iu alia:
      <ekz>
        la hebrea havas specialan konjugacian formon nomatan
        <ctl>hifil</ctl>, kiu donas al iu ajn radiko <tld/>an
        signifon: la hifil de ca&hcirc;ak "ridi" estas hic&hcirc;ik "ridigi"
        <fnt>
	<aut>Andr&eacute; Cherpillod</aut>
	<vrk><url ref="&Monato;/2000/007059.php">La influo de la hebrea lingvo sur Esperanto</url></vrk>
	<bib>Monato</bib>
	<lok>2000/12, p. 18-19</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_f;&c_a;&c_k;&c_t;&c_y;&c_t;&c_y;&c_w;</trd>,
    <trd>&c_k;&c_a;&c_w;&c_z;&c_a;&c_t;&c_y;&c_w;</trd>
  </trdgrp>
  <trd lng="fr">factitif</trd>
  <trd lng="nl">factitief</trd>
  <trd lng="pl">faktitivus  <klr>(forma czasownika)</klr></trd>
  <trdgrp lng="uk">
    <trd>&c_f;&c_a;&#x43A;&c_t;&c_i;&c_t;&c_i;&c_v;</trd>,
    <trd>&#x43A;&c_a;&c_u;&c_z;&c_a;&c_t;&c_i;&c_v;</trd>,
    <trd>&c_s;&#x43F;&#x43E;&#x43D;&c_u;&#x43A;&c_a;&#x43B;&#x44C;&#x43D;&c_a; &c_f;&#x43E;&c_r;&#x43C;&c_a;
    &c_d;&c_ib;&c_jeu;&c_s;&#x43B;&#x43E;&c_v;&c_a;</trd>
  </trdgrp>
</drv>
