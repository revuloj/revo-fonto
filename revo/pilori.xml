<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: pilori.xml,v 1.21 2024/02/17 06:43:07 revo Exp $">
<kap>
  <rad>pilori</rad>/o <fnt><bib>PVEF</bib></fnt>
</kap>
<drv mrk="pilori.0o">
  <kap><tld/>o</kap>
  <snc mrk="pilori.0o.JUR">
    <uzo tip="fak">JUR</uzo>
    <dif>
      <ref tip="dif" cel="kolon.malhonora0o.JUR">Malhonora kolono</ref>:
      <ekz>
        kapropieda satiruso <klr>[&#x2026;]</klr> ekvidas la <tld/>on, kredas &gcirc;in esti trono
        kaj suprengrimpas
        <fnt>
          <bib>SatirRak</bib>
          <lok>Logos</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi kaptis la &scirc;telinton kaj fiksis lin <klr>[&#x2026;]</klr> al meritita <tld/>o
        <fnt>
          <bib>Monato</bib>
          <aut>pp</aut>
          <vrk><url ref="&Monato;/2009/009703.php">Pilorio senpolica</url></vrk>
          <lok>2009</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_g;&c_a;&c_n;&c_je;&c_b;&c_n;&c_y; &c_s;&c_l;&c_u;&c_p;</trd>
  <trd lng="cs">pran&yacute;&rcaron;</trd>
  <trdgrp lng="de">
    <trd>Schandpfahl</trd>,
    <trd>Pranger</trd>
  </trdgrp>
  <trd lng="en">pillory</trd>
  <trd lng="fr">pilori</trd>
  <trd lng="hu">pelleng&eacute;r</trd>
  <trd lng="ja">&#x3055;&#x3089;&#x3057;&#x53F0;  <pr>&#x3055;&#x3089;&#x3057;&#x3060;&#x3044;</pr></trd>
  <trd lng="nl">schandpaal</trd>
  <trd lng="pl">pr&eogonek;gierz</trd>
  <trd lng="pt">pelourinho</trd>
  <trd lng="ro">pilor</trd>
  <trd lng="ru">&c_p;&c_o;&c_z;&c_o;&c_r;&c_n;&c_y;&c_j; &c_s;&c_t;&c_o;&c_l;&c_b;</trd>
  <trd lng="sk">pranier</trd>
  <trd lng="uk">&c_g;&c_a;&c_n;&c_je;&c_b;&c_n;&c_i;&c_j; &c_s;&c_t;&c_o;&c_v;&c_p;</trd>
  <trdgrp lng="zh">
    <trd>&#x5211;&#x67F1; <pr>x&#xED;ngzh&#xF9;</pr></trd>,
    <trd>&#x6065;&#x8FB1;&#x67F1; <pr>ch&#x1D0;r&#xF9;zh&#xF9;</pr></trd>,
    <trd>&#x803B;&#x8FB1;&#x67F1; <pr>ch&#x1D0;r&#xF9;zh&#xF9;</pr></trd>,
    <trd>&#x9838;&#x624B;&#x8FE6; <pr>j&#x1D0;ngsh&#x1D2;uji&#x101;</pr></trd>,
    <trd>&#x9888;&#x624B;&#x8FE6; <pr>j&#x1D0;ngsh&#x1D2;uji&#x101;</pr></trd>
  </trdgrp>
</drv>

<drv mrk="pilori.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="pilori.0i.JUR">
    <dif>
      <ref tip="super" cel="pun.0i.malbonaginton">Puni</ref> per ligado al <tld/>o:
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la kritiko anka&ubreve; en Esperantujo ofte <tld/>as tion,
        kion &scirc;atas la publiko
        <fnt>
          <aut>A. Kor&jcirc;enkov</aut>,
          <vrk>Unu ringo ilin regas</vrk>,
          <lok>2008</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_t;&c_a;&c_v;&c_ib;&c_c;&c_mol; &c_d;&c_a; &c_g;&c_a;&c_n;&c_je;&c_b;&c_n;&c_a;&c_g;&c_a; <ind>&c_s;&c_l;&c_u;&c_p;&c_a;</ind></trd>
  <trd lng="cs">postavit na pran&yacute;&rcaron;</trd>
  <trd lng="de">an den <ind>Pranger</ind> stellen</trd>
  <trd lng="fr">mettre au <ind>pilori</ind></trd>
  <trd lng="pl">mie&cacute;  <ind>pr&eogonek;gierz</ind></trd>
  <trd lng="ro">avea  <ind/>pilor</trd>
  <trd lng="sk">pranierova&tcaron;</trd>
  <trd lng="uk">&c_s;&c_t;&c_a;&c_v;&c_i;&c_t;&c_i; &c_d;&c_o; &c_g;&c_a;&c_n;&c_je;&c_b;&c_n;&c_o;&c_g;&c_o; &c_s;&c_t;&c_o;&c_v;&c_p;&c_a;</trd>
</drv>
</art>
