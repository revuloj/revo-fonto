<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: pilori.xml,v 1.14 2015/07/04 08:37:41 revo Exp $">
<kap>
  <rad>pilori</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="pilori.0o">
  <kap><tld/>o</kap>
  <snc mrk="pilori.0o.JUR">
    <uzo tip="fak">JUR</uzo>
    <ref tip="dif" cel="kolon.malhonora0o.JUR">malhonora kolono</ref>
  </snc>
  <trd lng="be">&c_g;&c_a;&c_n;&c_je;&c_b;&c_n;&c_y; &c_s;&c_l;&c_u;&c_p;</trd>
  <trd lng="cs">pranýř</trd>
  <trdgrp lng="de">
    <trd>Schandpfahl</trd>,
    <trd>Pranger</trd>
  </trdgrp>
  <trd lng="en">pillory</trd>
  <trd lng="fr">pilori</trd>
  <trd lng="hu">pelleng&eacute;r</trd>
  <trd lng="nl">schandpaal</trd>
  <trd lng="pt">pelourinho</trd>
  <trd lng="ru">&c_p;&c_o;&c_z;&c_o;&c_r;&c_n;&c_y;&c_j; &c_s;&c_t;&c_o;&c_l;&c_b;</trd>
  <trd lng="sk">pranier</trd>
</drv>

<drv mrk="pilori.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="pilori.0i.JUR">
    <dif>
      Puni per ligado al <tld/>o:
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la kritiko anka&ubreve; en Esperantujo ofte <tld/>as tion, 
        kion &scirc;atas la publiko
        <fnt>
          <aut>A. Kor&jcirc;enkov</aut>,
          <vrk>Unu ringo ilin regas</vrk>,
          <lok>2008</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">postavit na pranýř</trd>
  <trd lng="fr">mettre au <ind>pilori</ind></trd>
  <trd lng="sk">pranierovať</trd>
</drv>
</art>
