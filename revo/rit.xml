<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: rit.xml,v 1.23 2021/05/29 14:33:11 revo Exp $">
<kap>
  <ofc>3</ofc>
  <rad>rit</rad>/o <fnt><bib>PV</bib></fnt>
</kap>

<drv mrk="rit.0o">
  <kap><tld/>o</kap>
  <snc mrk="rit.0o.MOR">
    <dif>
      Agoj preskribitaj por koncerna okazo de religia a&ubreve; folklora
      tradicio:
      <ekz>
        la bapta <tld/>o.
      </ekz>
    </dif>
    <ref tip="sub" cel="sakram.0o">sakramento</ref>
    <refgrp tip="vid">
      <ref cel="ceremo.0o.solena">ceremonio</ref>,
      <ref cel="kult.0o.REL">kulto</ref>
    </refgrp>
    <rim>
      Ofte oni povas sinonime uzi la vorton
      &leftquot;<ref tip="super" cel="ceremo.0o.solena">ceremonio</ref>&rightquot;,
      kiu tamen pli akcentas eksteran pompon kaj ofte havas malpli
      profundajn radikojn en la tradicio, do estas pli facile
      modifebla.
      <aut>Sergio Pokrovskij</aut>
    </rim>
  </snc>
  <snc mrk="rit.0o.ETOL">
    <uzo tip="fak">BIO</uzo>
    <dif>
      &Scirc;ablona sinteno, blekado, gestado, odorado,
      per kiu bestoj starigas interrilaton:
      pari&gcirc;on, submeti&gcirc;on, man&gcirc;opeton...:
      <ekz>
        hienaj hundoj <klr>...</klr> dum renkontoj prezentas
        specialan salutan <tld/>aron
        <fnt>
          <aut>J. &Scirc;uvajev</aut>,
          <vrk><url ref="http://www.eventoj.hu/steb/zoologio/konduto_de_bestoj/f874-p30.htm">
          Pri la konduto de bestoj</url></vrk>,
          <lok>Fokuso, 1987:1, p. 2a</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="bo">&#xF5E;&#xF56;&#xF66;&#xF0B;&#xF56;&#xF62;&#xF9F;&#xF53;&#xF0B;</trd>
  <trd lng="ca">ritu</trd>
  <trdgrp lng="cs">
    <trd>ceremonie</trd>,
    <trd>ob&#x159;ad</trd>,
    <trd>ritu&#xE1;l</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Brauch</trd>,
    <trd>Ritual</trd>
  </trdgrp>
  <trd lng="en">rite</trd>
  <trdgrp lng="es">
    <trd>rito</trd>,
    <trd>ritual</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>rite</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>r&iacute;tus</trd>,
    <trd>szertart&aacute;s</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>rite</trd>,
    <trd>ritus</trd>,
    <trd>ritueel</trd>
  </trdgrp>
  <trd lng="pt">rito</trd>
  <trdgrp lng="ru">
    <trd>&c_o;&c_b;&c_r;&c_ja;&c_d;</trd>,
    <trd>&c_t;&c_r;&c_je;&c_b;&c_a;<klr> (&c_r;&c_je;&c_l;.)</klr></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>cerem&#xF3;nia</trd>,
    <trd>obrad</trd>,
    <trd>ritu&#xE1;l</trd>,
    <trd>r&#xED;tus</trd>
  </trdgrp>
</drv>

<drv mrk="rit.0aro">
  <kap><tld/>aro</kap>
  <snc mrk="rit.0aro.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      Tuto da <tld/>oj praktikataj en
      <ref tip="malprt" cel="religi.0o">religio</ref> a&ubreve;
      konfesio:
      <ekz>
        <ind>bizancia <tld/>aro</ind>,
        <trd lng="de">byzantinischer <ind>Ritus</ind></trd>
        <trd lng="ru">&c_v;&c_i;&c_z;&c_a;&c_n;&c_t;&c_i;&c_j;&c_s;&c_k;&c_i;&c_j; &c_o;&c_b;&c_r;&c_ja;&c_d;</trd>
      </ekz>
      <ekz>
        <ind>romkatolika <tld/>aro</ind>,
        <trd lng="de">r&ouml;misch-katholischer <ind>Ritus</ind></trd>
        <trd lng="ru">&c_l;&c_a;&c_t;&c_i;&c_n;&c_s;&c_k;&c_i;&c_j; &c_o;&c_b;&c_r;&c_ja;&c_d;</trd>
      </ekz>
      <ekz>
        <ind>judisma <tld/>aro</ind>;
        <trd lng="de">mosaischer <ind>Ritus</ind></trd>
        <trd lng="hu">zsid&oacute; <ind>szertart&aacute;s</ind></trd>	    
        <trd lng="ru">&c_i;&c_u;&c_d;&c_je;&c_j;&c_s;&c_k;&c_a;&c_ja; &c_o;&c_b;&c_r;&c_ja;&c_d;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>
      </ekz>
      <ekz>
        Oomoto <klr>(estas)</klr> <ctl>nova</ctl> japana religio,
        bazita sur tradicia japana kulturo kun &scirc;intoa <tld/>aro
        <fnt>
          <vrk><url ref="http://www2.saganet.ne.jp/vastalto/esp/ligoj.html">
          Ligoj al Esperantaj Hejmpa&gcirc;oj en Japanio</url></vrk></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="cs">
    <trd>ceremonie</trd>,
    <trd>ob&#x159;ad</trd>,
    <trd>ritu&#xE1;l</trd>
  </trdgrp>
  <trd lng="de">Ritus</trd>
  <trd lng="en">ritual</trd>
  <trd lng="es">ritual</trd>
  <trdgrp lng="fr">
    <trd>rite<klr> (ensemble de rites)</klr></trd>,
    <trd>rituel</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>ritu&aacute;l&eacute;</trd>,
    <trd>szertart&aacute;srend</trd>
  </trdgrp>
  <trd lng="nl">rituaal<klr tip="ind"> (ritueel)</klr></trd>
  <trdgrp lng="ru">
    <trd>&c_o;&c_b;&c_r;&c_ja;&c_d;</trd>,
    <trd>&c_o;&c_b;&c_r;&c_ja;&c_d;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_b;&c_o;&c_g;&c_o;&c_s;&c_l;&c_u;&c_zh;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>cerem&#xF3;nia</trd>,
    <trd>obrad</trd>,
    <trd>ritu&#xE1;l</trd>,
    <trd>r&#xED;tus</trd>
  </trdgrp>
</drv>

<drv mrk="rit.0libro">
  <kap><tld/>libro</kap>
  <snc>
   <uzo tip="fak">REL</uzo>
    <dif>
      Libro entenata pre&gcirc;ojn kaj formulojn uzendajn &ccirc;e diversaj
      ritoj.
    </dif>
  </snc>
  <ref tip="vid" cel="pregx.0olibro">pre&gcirc;olibro</ref>
  <trdgrp lng="en">
    <trd>ritual</trd>,
    <trd>formulary</trd>,
    <trd>book of devotions</trd>
  </trdgrp>
  <trd lng="fr">rituel<klr> (livre)</klr></trd>
  <trd lng="es">libro <ind>ritual</ind></trd>
  <trd lng="hu">szertart&aacute;sk&ouml;nyv</trd>
  <trd lng="nl">rituaal<klr tip="ind"> (boek)</klr></trd>	 
  <trd lng="ru">&c_t;&c_r;&c_je;&c_b;&c_n;&c_i;&c_k;</trd>
</drv>
</art>
