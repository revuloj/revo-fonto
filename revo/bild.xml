<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id$">
<kap>
<rad>bild</rad>/o
</kap>
<drv mrk="bild.0o">
      <kap><tld/>o</kap>
      <snc num="1">
        <dif>
          Videbla aspekto de la objektoj:
          <ekz>
            tiu montara pejza&gcirc;o
            prezentos plej pla&ccirc;an <tld/>on.
          </ekz>
        </dif>
      </snc>
      <snc num="2">
        <dif>
          Videbla aspekto de objekto resendata  de akvo a&ubreve; spegulo:
          <ekz>
            rigardi sian <tld/>on en spegulo;
          </ekz>
          <ekz>
            la rivero spegulas la <tld/>on de la luno.
          </ekz>
        </dif>
      </snc>
      <snc num="3">
        <dif>
          Videbla aspekto de objekto reprezentata per desegno, pentrado,
          skulptado:
          <ekz>
            libro kun belaj <tld/>oj.
          </ekz>
        </dif>
      </snc>
      <snc num="4">
        <dif>
          Tio, kio similas, imitas, simbolas:
          <ekz>
            al li naski&gcirc;is filo
            la&ubreve; lia <tld/>o kaj simileco
            <fnt>(<aut>Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
            <lok>Genezo 5, 3</lok>)</fnt>;
          </ekz>
          <ekz>
            li estas la vivanta <tld/>o de sia patro<fnt>B</fnt>;
          </ekz>
          <ekz>
            tiuj mildaj kamparaj ludoj estas la <tld/>o mem de la paco;
          </ekz>
          <ekz>
            rakonti ion klar<tld/>e
            <fnt>(<aut>Zamenhof</aut>: <vrk>Fabeloj de Andersen,
            Malnova domo</vrk>)</fnt>
            <klr>(plastike)</klr>.
          </ekz>
        </dif>
      </snc>
      <snc num="5">
        <dif>
          Reprezenta&jcirc;o de objekto en la imago:
          <ekz>
            mi &ccirc;iam revidas
            en spirito la <tld/>on de tiu terura tago;
          </ekz>
          <ekz>
            mi <tld/>igis al mi lian plezuron.
          </ekz>
        </dif>
      </snc>
      <snc num="6">
        <dif>
          Metaforo:
          <ekz>
            <tld/>oplena stilo.
          </ekz>
        </dif>
        <refgrp tip="sin">
          <ref cel="figur.0o">figuro</ref>,
          <ref cel="ikon.0o">ikono</ref>,
          <ref cel="ilustr.0ajxo">ilustra&jcirc;o</ref>,
          <ref cel="kopi">kopio</ref>,
          <ref cel="portre.0o">portreto</ref>,
          <ref cel="faksim.0o">faksimilo</ref>.
        </refgrp>
      </snc>
      <trd lng="cs">obraz</trd>
      <trd lng="de">Bild</trd>
      <trd lng="en">picture</trd>
      <trd lng="fr">image</trd>
      <trdgrp lng="ru">
        <trd>&c_k;&c_a;&c_r;&c_t;&c_i;&c_n;&c_a;</trd>,
        <trd>&c_i;&c_z;&c_o;&c_b;&c_r;&c_a;&c_zh;&c_je;&c_n;&c_i;&c_je;</trd>,
        <trd>&c_o;&c_b;&c_r;&c_a;&c_z;</trd>
      </trdgrp>
</drv>
<drv mrk="bild.rekta0o">
      <kap>(rekta) <tld/>o</kap>
      <uzo tip="fak">MAT</uzo>
      <snc  mrk="bild.rekta0o.subaro">
        <dif>
          (de subaro <em>A</em>&#x2282;<em>E</em> per <ref cel="rilat.0o.MAT">
          rilato</ref> <em>R</em>&#x2282;<em>E</em>x<em>F</em>)
          Tia subaro de <em>F</em>, ke por &ccirc;iu &gcirc;ia elemento 
ekzistas
          almena&ubreve; unu paro en <em>R</em>, kies dua termo &gcirc;i estas
          kaj kies unua termo apartenas al <em>A</em>:
          <ekz>
            la <tld/>on de <em>A</em> per <em>R</em> oni signas per
<em>R(A)</em>.
          </ekz>
        </dif>
        <trd lng="fr">image (directe) (d'un sous-ensemble)</trd>
      </snc>
      <snc mrk="bild.rekta0o.elemento">
        <dif>
          (de elemento <em>a</em>&#x2208;<em>E</em> per <ref cel="bild.0igo">
          <tld/>igo</ref> <em>f</em> de <em>E</em> al <em>F</em>)
          La elemento <em>f(a)</em> en <em>F</em>.
        </dif>
        <rim>
          La&ubreve; la difina eco de <tld/>igoj la <tld/>o de <em>a</em> estas
          anka&ubreve; la nura elemento de la <tld/>o de subaro <em>{a}</em>.
        </rim>
        <trd lng="fr">image (directe) (d'un &eacute;l&eacute;ment)</trd>
      </snc>
</drv>
<drv mrk="bild.inversa0o">
      <kap>inversa <tld/>o</kap>
      <uzo tip="fak">MAT</uzo>
      <snc  mrk="bild.inversa0o.subaro">
        <dif>
          (de subaro <em>B</em>&#x2282;<em>F</em> per <ref cel="rilat.0o.MAT">
          rilato</ref> <em>R</em>&#x2282;<em>E</em>x<em>F</em>)
          Tia subaro de <em>E</em>, ke por &ccirc;iu &gcirc;ia elemento 
ekzistas
          almena&ubreve; unu paro en <em>R</em>, kies unua termo &gcirc;i estas
          kaj kies dua termo apartenas al <em>B</em>:
        </dif>
        <ekz>
          la inversan <tld/>on de <em>B</em> per <em>R</em> oni signas per
          <em>R</em><sup>-1</sup><em>(B)</em>.
        </ekz>
        <trd lng="fr">image r&eacute;ciproque (d'un sous-ensemble)</trd>
      </snc>
      <snc  mrk="bild.inversa0o.elemento">
        <dif>
          (de elemento <em>b</em>&#x2208;<em>F</em> per <ref cel="bild.0igo">
          <tld/>igo</ref> <em>f</em> de <em>E</em> al <em>F</em>)
          La inversa <tld/>o de subaro <em>{b}</em> per <em>f</em>.
        </dif>
        <trd lng="fr">image r&eacute;ciproque (d'un 
&eacute;l&eacute;ment)</trd>
      </snc>
</drv>
<drv mrk="bild.0aro">
      <kap><tld/>aro</kap>
      <snc>
        <uzo tip="fak">MAT</uzo>
        <dif>
          (de <ref cel="bild.0igo"><tld/>igo</ref> <em>f</em>)
          La <ref cel="bild.rekta0o"><tld/>o</ref> de &gcirc;ia
          <ref cel="ar.fonto0o">fonto-aro</ref>.
        </dif>
      </snc>
      <trd lng="fr">image (d'une application)</trd>
</drv>
<drv mrk="bild.0igo">
      <kap><tld/>igo</kap>
      <snc>
        <uzo tip="fak">MAT</uzo>
        <dif>
          (de aro <em>E</em> al aro <em>F</em>) Tia <ref cel="rilat.0o.MAT">
          rilato</ref> <em>f</em> inter <em>E</em> kaj <em>F</em>, ke por
          &ccirc;iu elemento <em>a</em> en <em>E</em> ekzistas en 
<em>f</em> nur
          unu <ref cel="par.0o.MAT">paro</ref>, kies unua termo estas
<em>a</em>:
          <ekz>
            se &ccirc;iuj paroj en <em>f</em> havas la saman duan termon, oni
            kvalifikas la <tld/>igon konstanta;
          </ekz>
          <ekz>
            la aron de &ccirc;iuj <tld/>igoj de <em>E</em> al <em>F</em> oni
            foje signas per <em>F</em><sup>E</sup>.
          </ekz>
        </dif>
        <rim>
          Anstata&ubreve; diri, ke <ctl><em>(a, b)</em> apartenas al <tld/>igo
          <em>f</em></ctl>, oni preferas diri, ke <ctl><em>f</em> &jcirc;etas
          (a&ubreve; transformas, a&ubreve; <tld/>igas) <em>a</em> al 
<em>b</em>
          </ctl>, ke
          <ctl><em>f</em> asocias <em>b</em> kun <em>a</em></ctl>, ke
          <ctl><em>b</em> estas la valoro de <em>f</em> &ccirc;e
<em>a</em></ctl>,
          ke <ctl><em>b</em> estas la bildo de <em>a</em> per
<em>f</em></ctl>...
          kaj oni signas <em>b</em> per <em>f(a)</em>. La nocio <tld/>igo estas
          formaligo de la pli komuna nocio funkcio.
        </rim>
      </snc>
      <refgrp tip="vid">
        <ref cel="ar.fonto0o">fonto-aro</ref>,
        <ref cel="ar.celo0o">celo-aro</ref>,
        <ref cel="vic.0o.MAT">vico</ref>,
        <ref cel="funkci.0o.mat">funkcio</ref>,
        <ref cel="jxet.0o.mat">&jcirc;eto.</ref>
      </refgrp>
      <trd lng="en">mapping</trd>
      <trd lng="fr">application</trd>
      <trd
lng="ru">&c_o;&c_t;&c_o;&c_b;&c_r;&c_a;&c_zh;&c_je;&c_n;&c_i;&c_je;</trd>
</drv>
<drv mrk="bild.inversa0igo">
      <kap>inversa <tld/>igo, inverso (de <tld/>igo)</kap>
      <snc>
        <uzo tip="fak">MAT</uzo>
        <dif>
          (de <tld/>igo <em>f</em>) <ref cel="rilat.inversa0o">Inverso</ref>
          de rilato <em>f</em>, se anka&ubreve; &gcirc;i estas <tld/>igo.
        </dif>
      </snc>
     <trd lng="fr">application r&eacute;ciproque</trd>
</drv>
</art>
