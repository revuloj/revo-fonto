<art mrk="$Id: konfuzi.xml,v 1.5 2019/10/13 14:10:16 revo Exp $">
<kap>
   <rad>Konfuzi</rad>/o
</kap>
<drv mrk="konfuzi.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">EVI</uzo>
  <snc mrk="konfuzi.0o.konfuceo">
    <dif>
      <ref tip="dif" cel="konfuce">Konfuceo</ref>:
      <ekz>
         la tri libroj <ctl>La Granda Doktrino</ctl>, <ctl>Pri la
         Mezismo</ctl>, kaj <ctl>Analektoj de <tld/>o</ctl>
         <fnt><bib>RugxDom</bib>, <lok>&ccirc;apitro 73a, p. 532a</lok></fnt>;
      </ekz>
      <ekz>
        la &ccirc;ina filozofo <tld/>o iam diris: lernado sen pripenso vanas, kaj pensado sen
        lerno dan&gcirc;eras
        <fnt>
          <lok><url ref="https://www.medioq.com/CN/Beijing/360408823991223/%C4%88ina-Radio-Internacia"
              >&Ccirc;ina Radio Internacia, Esperanto Service, CRI-36</url></lok>
        </fnt>.
      </ekz>
     </dif>
   </snc>
<!-- ne traduku evitindajn...
   <trd lng="pl">Konfucjusz</trd>
   <trd lng="pt">Conf&uacute;cio</trd>
-->
</drv>
