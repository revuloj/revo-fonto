<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>despot</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="despot.0o">
  <kap><tld/>o</kap>
  <snc mrk="despot.0o.POL">
    <dif>
      Regnestro, kies a&ubreve;toritato estas senbara,
      absoluta, a&ubreve;tokrata.
    </dif>
    <refgrp tip="vid">
      <ref cel="diktat.0o">diktatoro</ref>,
      <ref cel="tiran.0o">tirano</ref>.
    </refgrp>
    <trd lng="be">&c_d;&c_e;&c_s;&c_p;&c_a;&c_t;</trd>
    <trd lng="bg">&c_d;&c_je;&c_s;&c_p;&c_o;&c_t;</trd>
    <trdgrp lng="de">
       <trd>Gewaltherrscher</trd>,
       <trd>Despot</trd>
    </trdgrp>
    <trd lng="en">despot</trd>
    <trd lng="es">d&eacute;spota</trd>
    <trd lng="fr">despote</trd>
    <trdgrp lng="hu">
       <trd>despota</trd>,
       <trd>k&eacute;ny&uacute;r</trd>,
       <trd>zsarnok</trd>
    </trdgrp>
    <trd lng="pl">despota</trd>
    <trd lng="pt">d&eacute;spota</trd>
    <trdgrp lng="ru">
      <trd>&c_d;&c_je;&c_s;&c_p;&c_o;&c_t;</trd>,
      <trd>&c_t;&c_i;&c_r;&c_a;&c_n;</trd>
    </trdgrp>
    <trdgrp lng="sk">
      <trd>tyran</trd>,
      <trd>despota</trd>
    </trdgrp>
  </snc>
</drv>

<drv mrk="despot.0ismo">
  <kap><tld/>ismo</kap>
  <snc mrk="despot.0ismo.POL">
    <uzo tip="fak">POL</uzo>
    <dif>
      Regado de <tld/>o:
      <ekz>
        Francio alvokadis la
        tutan mondon disrompi la katenojn de <tld/>ismo
        <fnt>
         <aut>L. N. Tolstoj, trad. I. Ma&ccirc;ernis</aut>,
         <vrk><url
         ref="http://cindymckee.com/librejo/TOLSTOJ_Kristanismo_kaj_patriotismo.pdf">
         Kristanismo kaj Patriotismo</url></vrk>,
         <lok>1931</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="diktat.0eco.POL">diktatoreco<sncref/></ref>
    </refgrp>
    <trdgrp lng="be">
      <trd>&c_d;&c_e;&c_s;&c_p;&c_a;&c_t;&c_y;&c_z;&c_m;</trd>,
      <trd>&c_d;&c_e;&c_s;&c_p;&c_a;&c_t;&c_y;&c_ja;</trd>
    </trdgrp>
    <trd lng="bg">&c_d;&c_je;&c_s;&c_p;&c_o;&c_t;&c_i;&c_z;&c_malmol;&c_m;</trd>
    <trdgrp lng="de">
       <trd>Gewaltherrschaft</trd>,
       <trd>Despotismus</trd>
    </trdgrp>
    <trd lng="en">despotism</trd>
    <trd lng="es">despotismo</trd>
    <trdgrp lng="hu">
       <trd>&ouml;nk&eacute;nyuralom</trd>,
       <trd>zsarnoks&aacute;g</trd>,
       <trd>despotizmus</trd>
    </trdgrp>
    <trdgrp lng="pl">
      <trd>despotyzm</trd>,
      <trd>absolutyzm</trd>
    </trdgrp>
    <trd lng="pt">despotismo</trd>
    <trdgrp lng="ru">
      <trd>&c_d;&c_je;&c_s;&c_p;&c_o;&c_t;&c_i;&c_z;&c_m;</trd>,
      <trd>&c_d;&c_je;&c_s;&c_p;&c_o;&c_t;&c_i;&c_ja;</trd>
    </trdgrp>
    <trd lng="sk">tyrania</trd>
  </snc>
  <snc mrk="despot.0ismo.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Tre rigora a&ubreve;toritato:
      <ekz>
        <tld/>ismo en familio <klr>...</klr>
        ruinigis milojn kaj milojn da junaj koroj
        <fnt>
          <aut>Ba Jin, trad. Li Shijun</aut>,
          <vrk>A&ubreve;tuno en la Printempo</vrk>,
          <lok>1980</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">despotisme</trd>
</drv>
</art>
