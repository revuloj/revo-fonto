<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>tondr</rad>/o
</kap>
<drv mrk="tondr.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <uzo tip="fak">MET</uzo>
    <dif>
      Krakbruego a&ubreve; rulbruego akompananta fulmon:
      <ekz>
        <tld/>o eksonis<fnt>B</fnt>
      </ekz>
      <ekz>
        ekbruis;
      </ekz>
      <ekz>
        anka&ubreve; diablo <tld/>on (= fulmon) suferos
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Bruego:
      <ekz>
        <tld/>o da apla&ubreve;doj
        (<ref tip="sin" cel="uragan.0o">uragano</ref>);
      </ekz>
      <ekz>
        <tld/>a vo&ccirc;o.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Donner</trd>
  <trd lng="fr">tonnerre</trd>
  <trd lng="nl">donder</trd>
  <trd lng="ru">&c_g;&c_r;&c_o;&c_m;</trd>
</drv>

<drv mrk="tondr.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <uzo tip="fak">MET</uzo>
    <dif>
      Fulmante bruegi.
    </dif>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Bruegi:
      <ekz>
        ne &ccirc;io batas, kio <tld/>as
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        ek<tld/>is la vo&ccirc;o de la kolonelo<fnt>B</fnt>;
      </ekz>
      <ekz>
        tiuj vortoj ek<tld/>is el lia bu&scirc;o<fnt>Z</fnt>;
      </ekz>
      <ekz>
        ek<tld/>is la tamburoj<fnt>B</fnt>,
      </ekz>
      <ekz>
        la kanonoj;
      </ekz>
      <ekz>
        la radoj de la vagonaro <tld/>is sur la ponto;
      </ekz>
      <ekz>
        <tld/>as apla&ubreve;doj;
      </ekz>
      <ekz>
        tiaj diskutoj <tld/>as hodia&ubreve; tra la tuta mondo;
      </ekz>
      <ekz>
        la popolo ek<tld/>is per granda aklamo.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">donnern</trd>
  <trd lng="en">thunder</trd>
  <trd lng="fr">tonner</trd>
  <trd lng="nl">donderen</trd>
  <trdgrp lng="ru">
    <trd>&c_g;&c_r;&c_je;&c_m;&c_je;&c_t;&c_mol;</trd>,
    <trd>&c_g;&c_r;&c_o;&c_m;&c_y;&c_h;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>
</art>
