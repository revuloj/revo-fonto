<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: tondr.xml,v 1.22 2015/07/04 08:37:45 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>tondr</rad>/i
</kap>
<drv mrk="tondr.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
<gra><vspec>ntr</vspec></gra>
  <snc mrk="tondr.0i.MET">
    <uzo tip="fak">MET</uzo>
    <dif>
      Fulmante bruegi:
      <ekz>
        <tld/>is kaj fulmis, sur la maro levi&gcirc;is nigraj ondoj
        <fnt><bib>ElektFab</bib>, <lok>fi&scirc;kaptisto kaj lia
        edzino</lok></fnt>.
      </ekz>
    </dif>
    <trd lng="hu">d&ouml;r&ouml;g az &eacute;g</trd>
  </snc>
  <snc mrk="tondr.0i.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Bruegi:
      <ekz>
        <ind>ne &ccirc;io batas, kio <tld/>as</ind>
        <trd lng="fr">chien qui aboie ne mord pas</trd>
        <trd lng="es">no todo lo que brilla es oro</trd>
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        ek<tld/>is la vo&ccirc;o de la kolonelo<fnt>B</fnt>;
      </ekz>
      <ekz>
        tiuj vortoj ek<tld/>is el lia bu&scirc;o<fnt>Z</fnt>;
      </ekz>
      <ekz>
        ek<tld/>is la tamburoj<fnt><bib>Far2</bib>, <lok>&ccirc;apitro
        18a</lok></fnt>;
      </ekz>
      <ekz>
        la radoj de la vagonaro <tld/>is sur la ponto;
      </ekz>
      <ekz>
        <tld/>as apla&ubreve;doj;
      </ekz>
      <ekz>
        tiaj diskutoj <tld/>as hodia&ubreve; tra la tuta mondo;
      </ekz>
      <ekz>
        la popolo <klr>...</klr> ek<tld/>is per <klr>...</klr> grandega
        aklamo
        <fnt><bib>Far3</bib>, <lok>&ccirc;apitro 9a</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="hu">
      <trd>d&ouml;r&ouml;g</trd>,
      <trd>d&ouml;ng</trd>
    </trdgrp>
  </snc>
  <trd lng="be">&c_g;&c_r;&c_y;&c_m;&c_je;&c_c;&c_mol;</trd>
  <trdgrp lng="cs">
    <trd>hřmít</trd>,
    <trd>hřmět</trd>,
    <trd>hřímat</trd>
  </trdgrp>
  <trd lng="de">donnern</trd>
  <trd lng="en">thunder</trd>
  <trd lng="es">tronar</trd>
  <trd lng="fa">&a_r;&a_ayn;&a_d; &a_z;&a_d;&a_n;</trd>
  <trdgrp lng="fr">
    <trd>retentir</trd>,
    <trd>tonner</trd>
  </trdgrp>
  <trd lng="nl">donderen</trd>
  <trd lng="pl">grzmie&cacute;</trd>
  <trd lng="pt">trovejar</trd>
  <trdgrp lng="ru">
    <trd>&c_g;&c_r;&c_je;&c_m;&c_je;&c_t;&c_mol;</trd>,
    <trd>&c_g;&c_r;&c_o;&c_m;&c_y;&c_h;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>burácať</trd>,
    <trd>hrmieť <klr>(po blesku)</klr></trd>
  </trdgrp>
</drv>
    
<drv mrk="tondr.0o">
  <kap><tld/>o</kap>
    <snc mrk="tondr.0o.MET">
    <uzo tip="fak">MET</uzo>
    <dif>
        Krakbruego a&ubreve; rulbruego akompananta fulmon:
      <ekz>
        <tld/>o eksonis pli proksime
        <fnt><bib>Far2</bib>, <lok>&ccirc;apitro 19a</lok></fnt>.
      </ekz>
      <ekz>
        anka&ubreve; diablo <tld/>on <klr>(fulmon)</klr> suferos
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <trd lng="hu">mennyd&ouml;rg&eacute;s</trd>
  </snc>
  <snc mrk="tondr.0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Bruego:
      <ekz>
        <tld/>o da apla&ubreve;doj;
      </ekz>
      <ekz>
        <tld/>a vo&ccirc;o.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="uragan.0o.FIG">uragano <sncref/></ref>
    </refgrp>
    <trd lng="hu">d&ouml;rg&eacute;s</trd>
  </snc>
  <trd lng="be">&c_g;&c_r;&c_o;&c_m;</trd>
  <trd lng="cs">hrom</trd>
  <trd lng="de">Donner</trd>
  <trd lng="es">trueno</trd>
  <trdgrp lng="fa">
    <trd>&a_r;&a_ayn;&a_d;</trd>,
    <trd>&a_t;&a_n;&a_d;&a_r;</trd>
  </trdgrp>
  <trd lng="fr">tonnerre</trd>
  <trd lng="nl">donder</trd>
  <trd lng="pl">grzmot</trd>
  <trd lng="pt">trov&atilde;o</trd>
  <trd lng="ru">&c_g;&c_r;&c_o;&c_m;</trd>
  <trdgrp lng="sk">
    <trd>hrmenie</trd>,
    <trd>hrom</trd>
  </trdgrp>
</drv>
</art>
