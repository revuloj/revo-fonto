    <kap>
      <rad>plagioklaz</rad>/o
      <fnt><bib>PIV1</bib></fnt>
    </kap>

<drv mrk="plagioklaz.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MIN</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="feldsp.0o">Feldspato</ref> kun albito
      (<frm>NaAlSi<sub>3</sub>O<sub>8</sub></frm>)
      kaj/a&ubreve; anortito (<frm>CaAl<sub>2</sub>Si<sub>2</sub>O<sub>8</sub></frm>), ri&ccirc;a
      je natrio, kalcio.
      <ekz>
        bazalto estas vulkana, plej ofte nigra roka&jcirc;o,
        kiu konsistas el mikso el fer- kaj magnezi-silikato, oliveno,
        pirokseno kaj <tld/>o
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=26374">Bazalto</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="de">Plagioklas</trd>
    <trd lng="en">plagioclase</trd>
    <trd lng="fr">plagioclase</trd>
  </snc>
<trd lng="be">&c_p;&c_l;&c_ja;&c_g;&c_ib;&c_ja;&c_k;&c_l;&c_ja;&c_z;</trd>
</drv>

  </art>

