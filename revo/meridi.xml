<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>2</ofc>
  <rad>meridian</rad>/o
</kap>
<drv mrk="meridi.0o">
  <kap>
    <tld/>o
  </kap>
  <snc mrk="meridi.0o.GEOG">
    <uzo tip="fak">GEOG</uzo>
    <dif>
      <ref tip="super" cel="cirkl.cxef0o">&Ccirc;efcirklo</ref> de la tera 
      sfero, trairanta amba&ubreve; &gcirc;iajn polusojn:
      <ekz>
        &ccirc;iu <tld/>o orte sekcas la <ref cel="ekvato.0o">ekvatoron</ref>;
      </ekz>
      <ekz>
        &ccirc;iuj lokoj ku&scirc;antaj sur sama <tld/>o havas saman horon
        <klr>(rilate al la suno)</klr>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="longit.0o">longitudo</ref>.
    </refgrp>
    <trd lng="de">Meridian</trd>
    <trdgrp lng="hu">
      <trd>meridi&aacute;n</trd>,
      <trd>d&eacute;lk&ouml;r</trd></trdgrp>
    <trd lng="nl">meridiaan</trd>
    <trd lng="fr">m&eacute;ridien<klr tip="ind"> (subst., g&eacute;og.)</klr></trd>
  </snc>
  <snc mrk="meridi.0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>MatTerm</bib><lok>p. 30</lok></fnt>
    <dif>
      <klr>(de <ref cel="rivolu.0a.figuro">rivolua</ref>
      <ref cel="surfac.0o.MAT">surfaco</ref>)</klr>
      Ebena <ref tip="super" cel="kurb.0o.MAT">kurbo</ref>, intersekco de
      la surfaco kun ebeno trairanta &gcirc;ian akson:
      <ekz>
        &ccirc;iuj <tld/>oj de cirklaj konuso a&ubreve; cilindro estas
        rektoj;
      </ekz>
      <ekz>
        rivolua surfaco difini&gcirc;as per sia akso kaj unu el siaj <tld/>oj.
      </ekz>
    </dif>
    <ref tip="vid" cel="parale.0o.de_rivolua_surfaco">paralelo.</ref>
    <trdgrp lng="de">
      <trd>Meridian</trd>,
      <trd>Meridianlinie</trd></trdgrp> 
    <trd lng="en">meridian<klr tip="ind"> (line)</klr></trd>
    <trd lng="fr">m&eacute;ridienne</trd>
    <trd lng="pl">po&lstroke;udnik<klr tip="ind"> (powierzchni obrotowej)</klr></trd>
  </snc>
  <trd lng="ru">&c_m;&c_je;&c_r;&c_i;&c_d;&c_i;&c_a;&c_n;</trd>
</drv>
</art>
