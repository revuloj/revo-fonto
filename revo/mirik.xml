<vortaro>
  <art mrk="$Id: mirik.xml,v 1.8 2025/05/06 22:29:31 revo Exp $">
    <kap>
      <rad>mirik</rad>/o
    <fnt><bib>PVEF</bib></fnt></kap>

<drv mrk="mirik.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">BOT</uzo><uzo tip="fak">KUI</uzo>
  <snc mrk="mirik.0o.spicherbo">
    <dif>
      <ref tip="lst" lst="voko:botanikaj_genroj" cel="genr.0o.BIO">Genro</ref> el la
      familio mirikacoj (<trd lng="la">Myrica</trd>), kies e&ubreve;ropa specio,
      arbusto kun lancetformaj ledecaj folioj
      kaj floroj en amentoj,
      estas uzata kiel <ref tip="lst" lst="voko:spicoj" cel="spic.0o.KUI">spic</ref>herbo,
      i.a. jam ek de 1500 a.K. por spici bieron:
      <ekz>
        sitelo de biero farita el tritiko, mielo, <tld/>o kaj ru&gcirc;a vakcinio estis
        metitaj sur la supra&jcirc;o
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=529089">Knabino de Egtved</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        &ccirc;iu urbo havis sian preferon rilate proprajn herbomiksa&jcirc;ojn <klr>[&#8230;]</klr>, en
        kiu enestis i.a. <tld/>o, rosmareno, koriandro, junipero
        <fnt>
          <aut>Lode Van de Velde</aut>
          <vrk><url ref="&Monato;/2001/007144.php">Bierlando Belgio</url></vrk>
          <bib>Monato</bib>
          <lok>2001/01, p. 18</lok>
        </fnt>.
      </ekz>
    </dif>
    <bld lok="&WCU;/thumb/d/d7/Myrica-gale-foliage-male-catkins.jpg/320px-Myrica-gale-foliage-male-catkins.jpg" prm="CC BY-SA 3.0">folioj kaj amento de ordinara <tld/>o (Myrica gale)
        <fnt>
          <aut>Sten, propra verko</aut>
          <lok><url ref="&WCW;/File:Myrica-gale-foliage-male-catkins.jpg">&WCW;/File:Myrica-gale-foliage-male-catkins.jpg</url></lok>
        </fnt>
    </bld>
    <trd lng="da">mosepors</trd>
    <trd lng="de">Gagelstrauch</trd>
    <trd lng="nl">gagel</trd>
  </snc>
  <trd lng="be">&c_v;&c_a;&c_s;&c_k;&c_o;&c_w;&c_n;&c_ib;&c_c;&c_a;</trd>
  <trdgrp lng="en">
    <trd>Myrica</trd>,
    <trd>bayberry</trd>,
    <trd><ind>bay-rum</ind> tree</trd>,
    <trd>candleberry</trd>,
    <trd><ind>sweet</ind> gale</trd>,
    <trd>wax-myrtle</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_v;&c_o;&c_s;&c_k;&c_ib;&c_v;&c_n;&c_i;&c_c;&c_ja;</trd>,
    <trd>&c_m;&c_i;&c_r;&c_t; &c_b;&c_o;&c_l;&c_o;&c_t;&c_n;&c_i;&c_j;</trd>
  </trdgrp>
</drv>

  </art>

