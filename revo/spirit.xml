  </trdgrp>
  <trd lng="uk">&c_d;&c_u;&c_h;&#x43E;&c_v;&#x43D;&c_i;&c_j;</trd>
  <trdgrp lng="zh">
    <trd>&#x5C5E;&#x7075; <pr>sh&#x1D4;l&#xED;ng</pr></trd>,
    <trd>&#x5C6C;&#x9748; <pr>sh&#x1D4;l&#xED;ng</pr></trd>,
    <trd>&#x5FC3;&#x7075;&#x4E0A; <pr>x&#x12B;nl&#xED;ngsh&#xE0;ng</pr></trd>,
    <trd>&#x5FC3;&#x9748;&#x4E0A; <pr>x&#x12B;nl&#xED;ngsh&#xE0;ng</pr></trd>
  </trdgrp>
