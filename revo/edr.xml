<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>edr</rad>/o
</kap>

<drv mrk="edr.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="edr.0o.ebeno">
    <dif>
      Ebena <ref tip="super" cel="surfac.0o.MAT">surfaco</ref>, kiu limas 
      <ref cel="solid.0o.geometrio">solidon</ref>:
      <ekz>
        kubo havas ses <tld/>ojn.
      </ekz>
    </dif>
    <rim>
      La terminologio, heredita de naciaj lingvoj, ne estas tre konsekvenca.
      La baritajn <tld/>ojn, kiuj limas plur<tld/>ojn, oni preferas nomi facoj
      kaj la nebaritajn <tld/>ojn, kiuj limas du- a&ubreve; tri-<tld/>ojn
      oni kutime ne nomas.
    </rim>
  </snc>
  <trd lng="nl">vlak<klr tip="ind"> (z.nw.)</klr></trd>
</drv>
<drv mrk="edr.du0o">
  <kap>du<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      &Ccirc;iu el la kvar nebaritaj 
      <ref tip="super" cel="solid.0o.geometrio">solidoj</ref>, estigitaj
      de du ebenoj kun komuna rekto; alternative, la paro konsistanta el
      la du duonebenoj, kiuj limas &ccirc;i tiun solidon.
    </dif>
  </snc>
  <trd lng="fr">di&egrave;dre</trd>
  <trdgrp lng="nl">
    <trd>tweevlak</trd>,
    <trd>di&euml;der</trd>
  </trdgrp>
</drv>
<drv mrk="edr.tri0o">
  <kap>tri<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      &Ccirc;iu el la ok nebaritaj 
      <ref tip="super" cel="solid.0o.geometrio">solidoj</ref>, estigitaj
      de tri ebenoj, kiuj sekcas unu la alian la&ubreve; rekto; 
      alternative, la triopo konsistanta el la eben-partoj, kiuj limas 
      &ccirc;i tiun solidon:
      <ekz>
        la angulo de &ccirc;ambro, limata de du muroj kaj planko, estas
        bona ilustra&jcirc;o de tri<tld/>o.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">tri&egrave;dre</trd>
  <trdgrp lng="nl">
    <trd>drievlak</trd>,
    <trd>tri&euml;der</trd>
  </trdgrp>
</drv>
<drv mrk="edr.plur0o">
  <kap>plur<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref cel="bar.0ita">Barita</ref>
      <ref tip="super" cel="solid.0o.geometrio">solido</ref>, kiun limas
      finia nombro da tiaj <ref cel="later.plur0o">plurlateroj</ref>, ke
      &ccirc;iu el &gcirc;iaj <ref cel="later.0o.streko">lateroj</ref>
      estas latero de unu alia plurlatero.
    </dif>
    <refgrp tip="vid">
      Atributoj de pluredro:
      <ref cel="skrib.cxirkaux0ita">&ccirc;irka&ubreve;skribita</ref> sfero,
      <ref cel="skrib.en0ita.enplurlateropluredro">enskribita</ref> sfero,
      <ref cel="skrib.en0ita.encirklosfero">enskribita</ref> en sfero,
      <ref cel="konkav.0a.subaro">konkava</ref>,
      <ref cel="konvek.0a.subaro">konveksa</ref>,
      <ref cel="angul.ort0a">ortangula</ref>,
      <ref cel="regul.0a.pluredro">regula</ref>;
    </refgrp>
    <refgrp tip="prt">
      Karakterizaj partoj de pluredroj:
      <ref cel="fac.0o.pluredro">faco</ref>,
      <ref cel="egx.0o.pluredro">e&gcirc;o</ref>,
      <ref cel="vertic.0o.pluredro">vertico</ref>;
    </refgrp>
    <refgrp tip="sub">
      Ekzemploj de pluredroj:
      <ref cel="edr.n0o">n-edro</ref>,
      <ref cel="parale1.0o">paralelepipedo</ref>,
      <ref cel="kub.0o.figuro">kubo</ref>,
      <ref cel="pirami.0o.figuro">piramido</ref>,
      <ref cel="prism.0o.figuro">prismo</ref>;
    </refgrp>
  </snc>
  <trd lng="en">polyeder</trd>
  <trd lng="de">Polyeder</trd>
  <trd lng="fr">poly&egrave;dre</trd>
  <trd lng="nl">veelvlak</trd>
  <trdgrp lng="ru">
    <trd>&c_m;&c_n;&c_o;&c_g;&c_o;&c_g;&c_r;&c_a;&c_n;&c_n;&c_i;&c_k;</trd>,
    <trd>&c_p;&c_o;&c_l;&c_i;&c_e;&c_d;&c_r;</trd></trdgrp> 
</drv>
<drv mrk="edr.n0o">
  <kap>n-<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(por n&#x2265;4)</klr>
      <ref tip="super" cel="edr.plur0o">Plur<tld/>o</ref> kun
      n <ref cel="fac.0o.pluredro">facoj</ref>:
      <ekz>
        <ind>kvar<tld/>o</ind>, 
        <trd lng="fr">t&eacute;tra&egrave;dre</trd>
        <trd lng="nl">tetra&euml;der</trd>
      </ekz>
      <ekz>
        <ind>ses<tld/>o</ind>,
        <trd lng="fr">hexa&egrave;dre</trd>
        <trd lng="nl">hexa&euml;der</trd>
      </ekz>
      <ekz>
        <ind>sep<tld/>o</ind>,
        <trd lng="fr">hepta&egrave;dre</trd>
      <trd lng="nl">hepta&euml;der</trd>
      </ekz>
      <ekz>
        <ind>ok<tld/>o</ind>,
        <trd lng="fr">octa&egrave;dre</trd>
        <trd lng="nl">octa&euml;der</trd>
      </ekz>
      <ekz>
        <ind>dek<tld/>o</ind>,
        <trd lng="fr">d&eacute;ca&egrave;dre</trd>
        <trd lng="nl">deca&euml;der</trd>
      </ekz>
      <ekz>
       <ind>dek-du<tld/>o</ind>, 
        <trd lng="fr">dod&eacute;ca&egrave;dre</trd>
        <trd lng="nl">dodeca&euml;der</trd>
      </ekz>
      <ekz>
        <ind>dudek<tld/>o</ind>,
        <trd lng="fr">icosa&egrave;dre</trd>
      </ekz>
      <ekz>
        sesdek-kvin<tld/>o...
      </ekz>
    </dif>
  </snc>
<trd lng="nl">n-vlak</trd>
</drv>

</art>

