<art mrk="$Id: balad.xml,v 1.25 2023/11/22 09:25:17 revo Exp $">
<kap>
  <ofc>2</ofc>
  <rad>balad</rad>/o <fnt><bib>JED</bib></fnt>
</kap>
<drv mrk="balad.0o">
  <kap><tld/>o</kap>
  <snc mrk="balad.0o.rakonta">
    <uzo tip="fak">POE</uzo>
    <dif>
      Rakonta <ref tip="super" cel="poezi.0ajxo">poezia&jcirc;o</ref> kun lirika formo:
      <ekz>
        la bela <tld/>o de <nom>Heine</nom> <ctl>En son&gcirc;o</ctl>
        <fnt>
          <aut>Edmond Privat</aut>,
          <vrk>Vivo de Zamenhof</vrk>,
          <lok>1920</lok>
        </fnt>;
      </ekz>
      <ekz>
        pri juna, alloga virino, entrepreninta tian dan&gcirc;eran voja&gcirc;on, sola, oni e&ccirc; ne
        a&ubreve;dis en <tld/>oj
        <fnt>
          <bib>I&scirc;tar</bib>
          <lok>&Ccirc;apitro XVI</lok>
        </fnt>;
      </ekz>
      <ekz>
        pla&ccirc;is al li <tld/>oj, &ccirc;ar tiuj rakontis pri la &ccirc;iutaga vivo de &ccirc;iutagaj homoj,
        pri iliaj tragedioj, amoj, malamoj, kaj aventuroj
        <fnt>
          <bib>Monato</bib>
          <aut>Angela Tellier</aut>
          <vrk><url ref="&Monato;/2004/008306.html"
              >La&ubreve;proverbaj fabeloj</url></vrk>
          <lok>2004</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="balad.0o.fiksforma">
    <uzo tip="fak">POE</uzo>
    <dif>
      &Ccirc;e romidaj popoloj, <ref tip="super" cel="poem.0o">poemo</ref> kun pli malpli fiksa formo (tri
      a&ubreve; kvar strofoj kaj duonstrofo):
      <ekz>
        <uzo tip="stl">FIG</uzo>
        pro la monotona <tld/>o de la remilo, <klr>[&#8230;]</klr> e&ccirc; la plej forte afliktita
        homo mirinde trankvili&gcirc;as
        <fnt>
          <bib>RBa</bib>
          <lok>&Ccirc;apitro I</lok>
        </fnt>.
      </ekz>
    </dif>
    <trdgrp lng="zh">
    <trd>&#30701;&#27468; <pr>du&#462;ng&#275;</pr></trd>,
    <trd>&#21465;&#20107;&#26354; <pr>x&ugrave;sh&igrave;q&#468;</pr></trd>,
    <trd>&#27665;&#35616; <pr>m&iacute;ny&aacute;o</pr></trd>
  </trdgrp>
</snc>
  <trd lng="be">&c_b;&c_a;&c_l;&c_ja;&c_d;&c_a;</trd>
  <trd lng="bg">&c_b;&c_a;&c_l;&c_a;&c_d;&c_a;</trd>
  <trd lng="ca">balada</trd>
  <trd lng="cs">balada</trd>
  <trd lng="de">Ballade</trd>
  <trd lng="en">ballad</trd>
  <trd lng="es">balada</trd>
  <trdgrp lng="fa">
    <trd>&f_ch;&f_k;&a_A;&a_m;&a_h;</trd>,
    <trd>&f_ch;&a_A;&a_m;&a_h;</trd>,
    <trd>&a_b;&a_A;&a_l;&a_A;&a_d;</trd>
  </trdgrp>
  <trd lng="fr">ballade</trd>
  <trd lng="he">&bet;&#1468;&#1463;&lamed;&#1464;&dalet;&#1464;&he;</trd>
  <trd lng="hu">ballada</trd>
  <trd lng="ja">&#12496;&#12521;&#12540;&#12489;  <pr>&#12400;&#12425;&#12540;&#12393;</pr></trd>
  <trd lng="nl">ballade</trd>
  <trd lng="pl">ballada</trd>
  <trd lng="ru">&c_b;&c_a;&c_l;&c_l;&c_a;&c_d;&c_a;</trd>
  <trd lng="sk">balada</trd>
  <trd lng="uk">&c_b;&c_a;&c_l;&c_a;&c_d;&c_a;</trd>
</drv>
</art>
