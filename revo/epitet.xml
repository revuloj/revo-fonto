<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>1</ofc>
      <rad>epitet</rad>/o
    </kap>

    <drv mrk="epitet.0o">
      <kap><tld/>o</kap>
      <snc mrk="epitet.0o.GRA">
	<uzo tip="fak">GRA</uzo>
	<dif>
	  <ref tip="super" cel="fraz.0parto">Frazparto</ref> gramatike
	  subordigita al <ref cel="nom.0o.LIN">nomo</ref> kaj
	  esprimanta ties econ, kvaliton, apartenon:
	  <ekz>
	    en <ctl>bela homo</ctl> kaj <ctl>granda domo</ctl> la
	    adjektivoj esprimas <tld/>ojn;
	  </ekz><ekz>
	    en la frazo
	    <ctl>li rememoris la domon <em>kun grandaj fenestroj</em></ctl>
	    la prepozicio <ctl>kun</ctl> enkondukas postmetitan <tld/>on;
	  </ekz><ekz>
	    <ind>adverba <tld/>o</ind> povas indiki kvanton, gradon, intenson
	    a&ubreve; emocian aprezon: <em>tre</em> bona, <em>iom</em> surda,
	    <em>terure</em> malbela.
	    <trd lng="hu">hat&aacute;roz&oacute;sz&oacute;i<ind> jelz&odblac;</ind></trd>
	    <trd lng="ru">&c_n;&c_a;&c_r;&c_je;&c_ch;&c_n;&c_o;&c_je; <ind>&c_o;&c_p;&c_r;&c_je;&c_d;&c_je;&c_l;&c_je;&c_n;&c_i;&c_je;</ind></trd>
	  </ekz>
	</dif>
	<refgrp tip="vid">
	  <ref cel="predik2.0o">predikativo</ref>.
	</refgrp>
	<trd lng="be">&c_a;&c_z;&c_n;&c_a;&c_ch;&c_e;&c_n;&c_mol;&c_n;&c_je; <klr tip="amb">(&c_g;&c_r;&c_a;&c_m;&c_a;&c_t;&c_y;&c_ch;&c_n;&c_a;&c_je;)</klr></trd>
	<trd lng="ru">&c_o;&c_p;&c_r;&c_je;&c_d;&c_je;&c_l;&c_je;&c_n;&c_i;&c_je;</trd>
      </snc>
      <snc mrk="epitet.0o.BELE">
	<uzo tip="fak">BELE</uzo>
	<dif>
	  Priskriba vorto (plej ofte adjektivo) a&ubreve; pluraj vortoj,
	  esprimantaj karakterizan trajton propran a&ubreve; speciale
	  konvenan al persono a&ubreve; objekto:
	  <ekz>
	    la kli&scirc;aj folkloraj <tld/>oj, kiel
	    <ctl>la blua &ccirc;ielo</ctl> a&ubreve;
	    <ctl>la hela tago</ctl>;
	  </ekz><ekz>
	    <ind>ornama <tld/>o</ind> <fnt><bib>PIV2</bib></fnt>
	    <klr>(termino de antikvaj retorikoj)</klr>;
	    <trdgrp lng="hu">
	      <trd>epitheton ornans</trd>,
	      <trd>d&iacute;sz&iacute;t&odblac; <ind>jelz&odblac;</ind></trd>
	    </trdgrp>
	    <trd lng="lat">epitheton ornans</trd>
	    <trd lng="ru">&c_u;&c_k;&c_r;&c_a;&c_sh;&c_a;&c_ju;&c_shch;&c_i;&c_j; &c_e;&c_p;&c_i;&c_t;&c_je;&c_t;</trd>
	  </ekz><ekz>
	    ne ekzistas tie e&ccirc; unu <tld/>o, kiu karakterizus la bu&scirc;on
	    de Heleno
	    <fnt><aut>&Z;</aut>, <lok>citite la&ubreve; PIV2, p. 293</lok></fnt>;
	  </ekz><ekz>
	    la kritikistoj super&scirc;utis lin per insultaj <tld/>oj;
	  </ekz><ekz>
	    kaj vi mem, &ccirc;efa militestro, permesu aldoni al via nomo
	    la <tld/>on: <ctl>Venka</ctl>
	    <fnt><bib>Far3</bib>, <lok>&ccirc;ap. 2</lok></fnt>;
	  </ekz><ekz>
	    nur tri papoj havas la epiteton <ctl>Granda</ctl>
	    <fnt>
	      <aut>Sergio Pokrovskij</aut>:
	      <vrk>Slavonaj skriboj (1)</vrk>,
	      <bib>LOdE</bib><lok>1998, n-ro 12(50).</lok>
	    </fnt>.
	  </ekz>
	</dif>
	<trd lng="be">&c_e;&c_p;&c_ib;&c_t;&c_e;&c_t;</trd>
	<trd lng="ru">&c_e;&c_p;&c_i;&c_t;&c_je;&c_t;</trd>
      </snc>
      <trdgrp lng="de">
	<trd>Epitheton</trd>,
	<trd>Beiwort</trd>
      </trdgrp>
      <trd lng="es">ep&iacute;teto</trd>
      <trd lng="fr">&eacute;pith&egrave;te</trd>
      <trd lng="hu">jelz&odblac;</trd>
      <trd lng="pt">ep&#237;teto</trd>
    </drv>

    <drv mrk="epitet.trop0o">
      <kap>trop<tld/>o</kap>
      <uzo tip="fak">BELE</uzo>
      <snc>
	<dif>
	  <ref tip="super" cel="trop.0o">Tropa</ref> <tld/>o, plej ofte
	  adjektiva, entenata implican komparon; kutima ornamo de
	  folklora poezio, ofta anka&ubreve; &ccirc;e Homero (<ctl>la bovinokula
	    Ateno</ctl> ktp).
	</dif>
      </snc>
      <trdgrp lng="ru">
	<trd>&c_o;&c_b;&c_r;&c_a;&c_z;&c_n;&c_o;&c_je; &c_o;&c_p;&c_r;&c_je;&c_d;&c_je;&c_l;&c_je;&c_n;&c_i;&c_je;</trd>,
	<trd>&c_e;&c_p;&c_i;&c_t;&c_je;&c_t;</trd>
      </trdgrp>
    </drv>
  </art>
