    <trd>&#22320;&#34101;&#x83E9;&#x85A9;  <pr>&#12376;&#x305E;&#12358;&#x307C;&#12373;&#12388;</pr></trd>,
    <trd>&#22320;&#34101;  <pr>&#12376;&#x305E;&#12358;</pr></trd>
  </trdgrp>
  <trd lng="pl">Kszitigarbha</trd>
  <trd lng="ro">Ksitigarbha</trd>
</drv>
