<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
   <art mrk="$Id$">
      <kap>
        <rad>izometri</rad>/o
      </kap>

      <drv mrk="izomet.0o">
        <kap><tld/>o</kap>
        <uzo tip="fak">MAT</uzo>
        <snc>
          <dif>
            <klr>(inter du
            <ref cel="spac.metrika0o">metrikaj spacoj</ref>)</klr>
            Tia <ref tip="super" cel="bild.0igo">bildigo</ref> f,
            ke la <ref cel="distan.0o.MAT">distanco</ref> inter du
            <ref cel="punkt.0o.spaco">punktoj</ref>
            de la fonto-aro egalas al la distanco
            inter iliaj bildoj per f en la celo-aro:
            <ekz>
              <tld/>o estas &ccirc;iam <ref 
cel="kontin3.0a.cxie">kontinua</ref>;
            </ekz>
            <ekz>
              en <ref cel="norm.0ita">normita</ref>
              <ref cel="spac.afina0o">afina spaco</ref>, provizita per
              metriko d(x,y)=||x-y||, la operacio de ajna vektoro estas
              <tld/>o.
            </ekz>
          </dif>
        </snc>
        <trd lng="en">isometry</trd>
        <trd lng="fr">isom&eacute;trie</trd>
        <trd lng="ru">&c_i;&c_z;&c_o;&c_m;&c_je;&c_t;&c_r;&c_i;&c_ja;</trd>
      </drv>

      <drv mrk="izomet.0a">
        <kap><tld/>a</kap>
        <uzo tip="fak">MAT</uzo>
        <snc mrk="izomet.0a.spacoj">
          <uzo tip="klr">(p.p. du spacoj)</uzo>
          <dif>
            Tiaj, ke ekzistas <tld/>o de unu al la alia.
          </dif>
        </snc>
        <snc mrk="izomet.0a.subaroj">
          <uzo tip="klr">(p.p. du subaroj)</uzo>
          <dif>
            Tiaj, ke ekzistas <tld/>o, per kiu unu estas bildo de la alia.
          </dif>
        </snc>
        <snc mrk="izomet.0a.bildigo">
          <uzo tip="klr">(p.p. bildigo)</uzo>
          <dif>
            Havanta ecojn de <tld/>o.
          </dif>
        </snc>
        <trd lng="en">isometric</trd>
        <trd lng="fr">isom&eacute;trique</trd>
      </drv>
    </art>

