<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: izomet.xml,v 1.23 2023/11/19 10:22:14 revo Exp $">
<kap>
  <rad>izometri</rad>/o
</kap>
<drv mrk="izomet.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc>
    <dif>
      <klr>(inter du <ref cel="spac.metrika0o">metrikaj
      spacoj</ref>)</klr>
      Tia <ref tip="super" cel="bild.0igo.MAT">bildigo</ref> 
      <frm am="f"><k>f</k></frm>, ke la 
      <ref cel="distan.0o.inter_punktoj">distanco</ref> inter du
      punktoj de la fonto-aro egalas al la distanco inter iliaj bildoj 
      per <frm am="f"><k>f</k></frm> en la celo-aro:
      <ekz>
        <tld/>o estas &ccirc;iam <ref cel="kontin3.0a.cxie">kontinua</ref>;
      </ekz>
      <ekz>
        en <ref cel="norm.0hava">normohava</ref>
        <ref cel="spac.afina0o">afina spaco</ref>, provizita per metriko
        <frm am="d(x,y)=||x-y||"><k>d</k>(<k>x</k>,<k>y</k>) = ||<k>x</k>-<k>y</k>||</frm>, 
        la <ref cel="operac.ekstera0o.elemento">ekstera operacio</ref>
        de ajna vektoro estas <tld/>o.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="poziti.0a.izometrio">pozitiva</ref>,
      <ref cel="negati.0a.izometrio">negativa</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_ib;&c_z;&c_a;&c_m;&c_e;&c_t;&c_r;&c_y;&c_ja;</trd>
  <trd lng="bg">&c_i;&c_z;&c_o;&c_m;&c_je;&c_t;&c_r;&c_i;&c_ja;</trd>
  <trd lng="cs">izometrie</trd>
  <trd lng="de">Isometrie</trd>
  <trd lng="en">isometry</trd>
  <trd lng="es">isometr&iacute;a</trd>
  <trd lng="fr">isom&eacute;trie</trd>
  <trd lng="hu">izometria</trd>
  <trd lng="nl">isometrie</trd>
  <trd lng="pl">izometria</trd>
  <trd lng="pt">isometria</trd>
  <trd lng="ru">&c_i;&c_z;&c_o;&c_m;&c_je;&c_t;&c_r;&c_i;&c_ja;</trd>
  <trd lng="sk">izometria</trd>
  <trd lng="uk">&#x456;&#x437;&#x43E;&#x43C;&#x435;&#x442;&#x440;&#x456;&#x44F;</trd>
  <trd lng="zh">&#x540C;&#x5206;&#x5F02;&#x6784; <pr>t&#xF3;ngf&#x113;ny&#xEC;g&#xF2;u</pr></trd>
</drv>

<drv mrk="izomet.0a">
  <kap><tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc mrk="izomet.0a.spacoj">
    <dif>
      <klr>(p.p. du <ref cel="spac.metrika0o">metrikaj
      spacoj</ref>)</klr>
      Tiaj, ke ekzistas <ref cel="izomet.0o"><tld/>o</ref> de unu al la
      alia.
    </dif>
  </snc>
  <snc mrk="izomet.0a.subaroj">
    <dif>
      <klr>(p.p. du subaroj)</klr>
      Tiaj, ke ekzistas <ref cel="izomet.0o"><tld/>o</ref>, per kiu 
      unu estas bildo de la alia.
    </dif>
    <ref tip="vid" cel="egal.0a.izometria">egala.</ref>
  </snc>
  <snc mrk="izomet.0a.bildigo">
    <dif>
      <klr>(p.p. <ref cel="bild.0igo.MAT">bildigo</ref>)</klr>
      Havanta ecojn de <ref cel="izomet.0o"><tld/>o</ref>.
    </dif>
  </snc>
  <trd lng="be">&c_ib;&c_z;&c_a;&c_m;&c_e;&c_t;&c_r;&c_y;&c_ch;&c_n;&c_y;</trd>
  <trd lng="bg">&c_i;&c_z;&c_o;&c_m;&c_je;&c_t;&c_r;&c_i;&c_ch;&c_n;&c_o;</trd>
  <trd lng="ca">isom&egrave;tric</trd>
  <trd lng="de">isometrisch</trd>
  <trd lng="en">isometric</trd>
  <trd lng="es">isom&eacute;trico</trd>
  <trd lng="fr">isom&eacute;trique</trd>
  <trd lng="hu">izometrikus</trd>
  <trd lng="nl">isometrisch</trd>
  <trd lng="pl">izometryczny</trd>
  <trd lng="ru">&c_i;&c_z;&c_o;&c_m;&c_je;&c_t;&c_r;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  <trdgrp lng="zh">
    <trd>&#x4FDD;&#x9577; <pr>b&#x1CE;och&#xE1;ng</pr></trd>,
    <trd>&#x7B49;&#x9577; <pr>d&#x11B;ngch&#xE1;ng</pr></trd>
  </trdgrp>
</drv>
</art>
