    <trd>tend</trd>
  </trdgrp>
  <trd lng="es">cuidar<klr> (a un ni&ntilde;o, a un anciano, un
animal)</klr></trd>
  <trdgrp lng="fr">
    <trd>prendre soin<klr> (d'un enfant, d'un jeune animal,
