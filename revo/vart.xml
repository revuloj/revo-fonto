    <trd>verzorgen</trd>
  </trdgrp>
  <trd lng="pt">cuidar de</trd>
  <trdgrp lng="ru">
    <trd>&c_n;&c_ja;&c_n;&c_ch;&c_i;&c_t;&c_mol;</trd>,
    <trd>&c_u;&c_h;&c_a;&c_zh;&c_i;&c_v;&c_a;&c_t;&c_mol; <klr tip="amb">(&c_z;&c_a; &c_r;&c_je;&c_b;&c_jo;&c_n;&c_k;&c_o;&c_m; &c_i;
&c_t;.&c_p;.)</klr></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>dozera&tcaron; na niekoho</trd>,
    <trd>opatrova&tcaron;</trd>,
    <trd>varova&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_n;&c_ja;&c_n;&c_mol;&c_ch;&c_i;&c_t;&c_i;</trd>,
    <trd>&c_d;&c_o;&c_g;&c_l;&c_ja;&c_d;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_p;&c_ib;&c_k;&c_l;&c_u;&c_v;&c_a;&c_t;&c_i;&c_s;&c_ja; (&c_t;&c_v;&c_a;&c_r;&c_i;&c_n;&c_a;&c_m;&c_i;</trd>,
