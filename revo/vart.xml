<drv mrk="vart.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="vart.0i.KOMUNE">
    <dif>
      Gardi kaj <ref tip="super" cel="zorg.0i">zorgi</ref> viva&jcirc;on,
      kiu bezonas helpon pro sia juneco:
      <ekz>
        ili ame <tld/>is la infanon, kiu kreskis sana kaj virta
        <fnt>
          <bib>ElektFab</bib>
          <lok>Tri oraj haroj de la diablo</lok>
        </fnt>;
      </ekz>
      <ekz>
        preni ian honestan nejunan servantinon, kiu <klr>[&#x2026;]</klr> povus <tld/>i Janjon
        zorge, prudente
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        la horo alproksimi&gcirc;as, kiam &scirc;i povos rapidi hejmen por su&ccirc;igi kaj <tld/>i lin
        <fnt>
          <bib>IdO</bib>
          <lok>Dua Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        li scias <tld/>i novnaskiton
        <fnt>
          <bib>KPr</bib>
          <lok>&Ccirc;apitro Dekdua</lok>
        </fnt>;
      </ekz>
      <ekz>
        vi <tld/>as &ccirc;i tiun rosmaridon kiel infanon
        <fnt>
          <bib>&Ccirc;uk&ccirc;oj</bib>
          <lok>3. La e&ubreve;rope edukita homo</lok>
        </fnt>;
      </ekz>
      <ekz>
        la floro estis plantita per feli&ccirc;a mano, <klr>[&#x2026;]</klr> li priver&scirc;adis &gcirc;in kaj
        <tld/>adis &gcirc;in kaj zorgadis pri tio, ke &gcirc;i ricevu plene &ccirc;iun sunradion
        <fnt>
          <bib>Fab2</bib>
          <lok>An&gcirc;elo</lok>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        mi komencis dubi pri la grandega sukceso, <klr>[&#x2026;]</klr> sed la &gcirc;enerala
        optimismo <tld/>is ankora&ubreve; mian esperon
        <fnt>
          <bib>KrM</bib>
          <lok>25. Multe Da Spirito Sed Neniom Da Profito.</lok>
        </fnt>;
      </ekz>
      <ekz>
        per tro multa <tld/>o <klr>(dorlotado)</klr> malboni&gcirc;as la farto
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="fleg.0i.KOMUNE">flegi</ref>,
      <ref cel="zorg.pri0i">prizorgi</ref>
    </refgrp>
  </snc>
  <snc mrk="vart.0i.bonteni">
    <dif>
      <ref tip="dif" cel="ten.bon0i">Bonteni</ref>:
      <ekz>
        por <tld/>i la limon, Sud-Koreio elektis <klr>[&#x2026;]</klr>
        Svislandon kaj Svedion
        <fnt>
          <bib>Monato</bib>
          <aut>Grosjean Mirejo kaj Lee Jung Kee</aut>
          <vrk><url ref="&Monato;/2008/009657.php">Vundita lando</url></vrk>
          <lok>2008/12, p. 10</lok>
        </fnt>;
      </ekz>
      <ekz>
        la homaro nepre devas konstante klopodi por <tld/>i kaj protekti la lingvan
        ri&ccirc;econ de la mondo
        <fnt>
          <bib>Monato</bib>
          <aut>Garvan Makaj' (Garbhan MacAoidh)</aut>
          <vrk><url ref="&Monato;/2011/010317.php">&Ccirc;u gravas, se lingvoj mortas?</url></vrk>
          <lok>2011/05, p. 25</lok>
        </fnt>;
      </ekz>
      <ekz>
        la modulo bezonas nek elektron, nek ian kemian substancon, kaj oni ne bezonas
        &gcirc;in iel <tld/>i a&ubreve; flegi
        <fnt>
          <bib>Monato</bib>
          <aut>Walter Klag</aut>
          <vrk><url ref="&Monato;/2012/010583.php">Grander-akvo mirakla</url></vrk>
          <lok>2012/04, p. 16</lok>
        </fnt>.
      </ekz>
    </dif>
  <trdgrp lng="de">
    <trd>warten</trd>,
    <trd><ind>instand</ind> halten</trd>
  </trdgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_n;&c_ja;&c_n;&c_mol;&c_ch;&c_y;&c_c;&c_mol;</trd>,
    <trd>&c_g;&c_a;&c_d;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>,
