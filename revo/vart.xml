<drv mrk="vart.infan0ejo">
  <kap>infan<tld/>ejo</kap>
  <snc mrk="vart.infan0ejo.PED">
    <uzo tip="fak">PED</uzo>
    <dif>
      <tld lit="V"/>ejo por junaj infanoj, kiuj ankora&ubreve; ne vizitas lernejon:
      <ekz>
        &ccirc;e infan<tld/>ejoj oni faras etajn pupojn el papero kaj pendigas ilin &ccirc;e
        fenestroj
        <fnt>
          <bib>Monato</bib>
          <aut>Hori Yasuo</aut>
          <vrk><url ref="&Monato;/2003/007854.html">&Ccirc;u &gcirc;oja plorpluvo?</url></vrk>
          <lok>2003/06, p. 12</lok>
        </fnt>;
      </ekz>
      <ekz>
        multaj gepatroj ne povas toleri la eduko-kostojn de siaj idoj: kotizoj &ccirc;e
        infan<tld/>ejoj <klr>[&#x2026;]</klr> plialti&gcirc;as
        <fnt>
          <bib>Monato</bib>
          <aut>Hori Jasuo</aut>
          <vrk><url ref="&Monato;/2006/008862.php">&Scirc;rumpanta lando, kreskanta &scirc;anco</url></vrk>
          <lok>2006/03, p. 10</lok>
        </fnt>;
      </ekz>
      <ekz>
        frekventado de infan<tld/>ejo estas libervola en Germanio &ndash; kaj kosta, sed
        frekventado de lernejo estas deviga kaj senpaga
        <fnt>
          <bib>Monato</bib>
          <aut>Stefan Maul</aut>
          <vrk><url ref="&Monato;/2006/008963.php">Germana batalo</url></vrk>
          <lok>2006/06, p. 7</lok>
        </fnt>;
      </ekz>
      <ekz>
        ili &ccirc;iamaniere akcelas uzadon de angla lingvo, kiun oni parte instruas jam en
        infan<tld/>ejoj
        <fnt>
          <bib>Monato</bib>
          <aut>Stefan Maul</aut>
          <vrk><url ref="&Monato;/2008/009519.php">Subpremo lingva</url></vrk>
          <lok>2008/07, p. 5</lok>
        </fnt>;
      </ekz>
      <ekz>
        dum la 89-a UK funkcias infan<tld/>ejo, kiu portas
        la nomon <nom>Song Qingling</nom>
        <fnt>
          <aut>Wang Lihua</aut>,
          <vrk><url ref="http://www.espero.com.cn/old/epch/z-uk-2004/04z-02t/04z-uk-02-19.htm">
          La infanvartejo Song Qingling</url></vrk>,
          <lok>El Popola &Ccirc;inio, [2004]</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="gxarde.infan0o.PED">infan&gcirc;ardeno</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_ja;&c_s;&c_mol;&c_l;&c_ib; <klr>(&c_d;&c_z;&c_ib;&c_c;&c_ja;&c_ch;&c_y;&c_ja;)</klr></trd>
  <trdgrp lng="cs">
    <trd>d&ecaron;tsk&aacute; &scaron;kolka</trd>,
    <trd>jesle</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Kindertagesst&auml;tte</trd>,
    <trd>Kindergarten</trd>,
    <trd>Krippe</trd>
  </trdgrp>
  <trd lng="fr">garderie</trd>
  <trd lng="ja">&#x4FDD;&#x80B2;&#x5712;  <pr>&#x307B;&#x3044;&#x304F;&#x3048;&#x3093;</pr></trd>
  <trdgrp lng="nl">
    <trd>cr&egrave;che</trd>,
    <trd>peutertuin</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>jasle</trd>,
    <trd>matersk&aacute; &scaron;k&ocirc;lka</trd>
  </trdgrp>
</drv>
