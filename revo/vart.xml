  <trdgrp lng="ja">
    <trd>&#x4FDD;&#x80B2;&#x3059;&#x308B;  <pr>&#x307B;&#x3044;&#x304F;&#x3059;&#x308B;</pr></trd>,
    <trd>&#x990A;&#x80B2;&#x3059;&#x308B;  <pr>&#x3088;&#x3046;&#x3044;&#x304F;&#x3059;&#x308B;</pr></trd>,
    <trd>&#x80B2;&#x3066;&#x308B;  <pr>&#x305D;&#x3060;&#x3066;&#x308B;</pr></trd>,
