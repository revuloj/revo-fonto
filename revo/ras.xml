<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
   <ofc>1</ofc>
   <rad>ras</rad>/o
</kap>
<drv mrk="ras.0o">
   <kap><tld/>o</kap>
   <snc mrk="ras.0o.BIO">
     <uzo tip="fak">ZOO</uzo>
     <uzo tip="fak">BOT</uzo>
     <dif>
       Subspeco, kies propraj karakteroj estas konstantaj kaj heredaj:
       <ekz>
         la blanka, flava <tld/>o;
       </ekz>
       <ekz>
         bela <tld/>o de kokoj, de rozoj;
       </ekz>
       <ekz>
         bon<tld/>a, pur<tld/>a, miks<tld/>a hundo;
       </ekz>
       <ekz>
         <ctl>La infana <tld/>o</ctl>
         <klr>(poemo de William Auld)</klr>
         <fnt><aut>Auld William</aut>, <vrk>La infana raso. - La Laguna:
         Stafeto, 1956</vrk></fnt>.
       </ekz>
     </dif>
     <trd lng="hu">faj</trd>
     <trd lng="nl">ras</trd>
     <trdgrp lng="ru">
       <trd>&c_r;&c_a;&c_s;&c_a;</trd>,
       <trd>&c_p;&c_o;&c_r;&c_o;&c_d;&c_a;</trd>
     </trdgrp>
   </snc>
   <snc mrk="ras.0o.GEN">
     <uzo tip="fak">GEN</uzo>
     <dif>
       Tuto de la sinsekvaj generacioj de unu sama familio, konsiderata
       kiel devenanta de unu sama prapatro:
       <ekz>
         la <tld/>o de Abraham
       </ekz>
     </dif>
     <refgrp tip="vid">
       <ref cel="dom.0o">domo</ref>,
       <ref cel="gent.0o">gento</ref>,
       <ref cel="sang.0o">sango</ref>,
       <ref cel="sem.0o">semo</ref>
     </refgrp>
     <refgrp tip="vid">
       <ref cel="hered.0a">hereda</ref>.
     </refgrp>
     <trd lng="hu">nemzets&eacute;g</trd>
     <trd lng="nl">geslacht</trd>
   </snc>
   <trd lng="be">&c_r;&c_a;&c_s;&c_a;</trd>
   <trd lng="de">Rasse</trd>
   <trd lng="en">breed</trd>
   <trd lng="fr">race</trd>
   <trd lng="sv">ras</trd>
</drv>

<drv mrk="ras.0ismo">
   <kap><tld/>ismo</kap>
   <snc mrk="ras.0ismo.POL">
     <dif>
       Malestimo al homoj ali<tld/>aj, rigardataj kiel malsuperaj, agresemo
       kontra&ubreve; ili:
       <ekz>
         mi scias bone <klr>...</klr> pri la <tld/>ismo &ccirc;e e&ubreve;ropanoj
         <fnt>
         <aut>Yamasaki Seik&ocirc;</aut>,
         <vrk>Landnomoj: homaj frenezigiloj</vrk>,
         <bib>Monato</bib>,
         <lok>jaro 2003a, numero 2a, p. 22a</lok>
         </fnt>.
       </ekz>
     </dif>
   </snc>
   <trd lng="fr">racisme</trd>
</drv>

<drv mrk="ras.0isto">
   <kap><tld/>isto</kap>
   <snc mrk="ras.0isto.POL">
     <dif>
       Homo malfavora, mal&scirc;ata a&ubreve; agresema al ali<tld/>anoj.
     </dif>
   </snc>
   <trd lng="fr">raciste</trd>
</drv>
</art>
