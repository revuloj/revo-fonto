<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: epos.xml,v 1.22 2023/11/22 09:25:17 revo Exp $">
<kap>
  <rad>epos</rad>/o
  <fnt><bib>JED</bib></fnt>
</kap>

<drv mrk="epos.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">BELE</uzo>
  <uzo tip="fak">LIN</uzo>
  <snc mrk="epos.0o.POE">
    <dif>
      La rakonta <ref tip="super" cel="gxenr.0o">&gcirc;enro</ref>
      de <ref tip="super" cel="litera.0o">literaturo</ref>,
      versa a&ubreve; proza, (kontraste al <ref cel="lirik.0o">liriko</ref>
      kaj <ref cel="dram.0o.TEA">dramo</ref>).
    </dif>
  </snc>
  <snc mrk="epos.0o.verko">
    <dif>
      <ref tip="super" cel="verk.0o.propra">Verko</ref> de tiu &gcirc;enro, t.e. <tld/>a&jcirc;o,
      <ref tip="sin" cel="epope.0o.POE">epopeo</ref>:
      <ekz>
        li volis korekti la tekstojn de la <tld/>oj de Homero, &ccirc;ar li opiniis ilin
        malkorektaj
        <fnt>
          <bib>Ret</bib>
          <lok>Unua Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        koncerne versa&jcirc;ojn &ndash; ili na&ubreve;zas min, de kiam Nero verkas <tld/>on
        <fnt>
          <bib>QuV</bib>
          <lok>&Ccirc;apitro II</lok>
        </fnt>;
      </ekz>
      <ekz>
        tia estas la psikologia genezo de lia <tld/>o &leftquot;Sinjoro Tadeo&rightquot;
        <fnt>
          <bib>SrT</bib>
          <lok>Anta&ubreve;parolo</lok>
        </fnt>.
      </ekz>
    </dif>
  <trd lng="de">episches Gedicht</trd>
  </snc>
  <trd lng="be">&c_e;&c_p;&c_a;&c_s;</trd>
  <trd lng="ca">epopeia</trd>
  <trdgrp lng="cs">
    <trd>epos</trd>,
    <trd>v&yacute;pravn&aacute; b&aacute;se&ncaron;</trd>
  </trdgrp>
  <trd lng="de">Epos</trd>
  <trd lng="en">primitive narrative poetry</trd>
  <trd lng="es">epopeya</trd>
  <trd lng="fr">&eacute;pop&eacute;e<klr tip="amb">
      (genre)</klr></trd>
  <trd lng="hu">elbesz&eacute;l&odblac;
      <ind>k&ouml;ltem&eacute;ny</ind></trd>
  <trdgrp lng="ja">
    <trd>&#21465;&#20107;&#35433;  <pr>&#12376;&#12423;&#12376;&#12375;</pr></trd>,
    <trd>&#29289;&#35486;&#35433;  <pr>&#12418;&#12398;&#12364;&#12383;&#12426;&#12375;</pr></trd>
  </trdgrp>
  <trd lng="pl">epos</trd>
  <trdgrp lng="pt">
    <trd>epos</trd>,
    <trd>epop&eacute;ia</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_e;&c_p;&c_o;&c_s;</trd>,
    <trd>&c_p;&c_o;&c_v;&c_je;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_a;&c_ja;
    &c_l;&c_i;&c_t;&c_je;&c_r;&c_a;&c_t;&c_u;&c_r;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>epos</trd>,
    <trd>v&yacute;pravn&aacute; b&aacute;se&ncaron;</trd>
  </trdgrp>
  <trd lng="uk">&c_je;&c_p;&c_o;&c_s;</trd>
</drv>
