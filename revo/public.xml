  <trd lng="ru">&c_p;&c_u;&c_b;&c_l;&c_i;&c_c;&c_i;&c_s;&c_t;</trd>
  <trd lng="sk">novin&aacute;r</trd>
  <trd lng="uk">&c_p;&c_u;&c_b;&c_l;&c_ib;&c_c;&c_i;&c_s;&c_t;</trd>
  <trdgrp lng="zh">
