        <trd>publicista</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#26178;&#20107;&#35413;&#35542;&#23478;  <pr>&#12376;&#12376;&#12402;&#12423;&#12358;&#12429;&#12435;&#12363;</pr></trd>,
