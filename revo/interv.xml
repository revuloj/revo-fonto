<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>interval</rad>/o
</kap>
<drv mrk="interv.0o">
  <kap><tld/>o</kap>
  <snc mrk="interv.0o.MUZ">
    <uzo tip="fak">MUZ</uzo>
    <dif>
      Interspaco, disiganta du notojn: <ekz>disonancaj <tld/>oj.</ekz>
    </dif>
  </snc>
  <snc mrk="interv.0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>PIV1</bib></fnt>
    <dif>
      <ref tip="super" cel="ar.0o.MAT">Aro</ref> de &ccirc;iuj 
      <ref tip="prt" cel="reel.0o.MAT">reeloj</ref>, trovi&gcirc;antaj
      inter du reeloj <frm><k>a</k></frm> kaj <frm><k>b</k></frm>; 
      pli &gcirc;enerale: konveksa subaro de la aro de reeloj:
      <ekz>
        la <tld/>on oni notas per skriba&jcirc;o de la tipo 
        <frm>[<k>a</k>,<k>b</k>]</frm> 
        <klr>(fermita <tld/>o, <frm><k>a</k></frm> kaj <frm><k>b</k></frm>
        apartenas al la koncerna aro)</klr>,
        <frm>]<k>a</k>,<k>b</k>[</frm> 
        <klr>(malfermita <tld/>o, nek <frm><k>a</k></frm> nek 
        <frm><k>b</k></frm> apartenas al &gcirc;i)</klr>,
        <frm>[<k>a</k>,<k>b</k>[</frm> a&ubreve; 
        <frm>]<k>a</k>,<k>b</k>]</frm> <klr>(duonfermita <tld/>o)</klr>;
      </ekz>
      <ekz>
        la reelojn <frm><k>a</k></frm> kaj <frm><k>b</k></frm> oni nomas 
        <ref tip="prt" cel="rand.0o.intervalo">randoj</ref> de la <tld/>o.
      </ekz>
    </dif>
    <rim>
      La nocio estas vastigebla al nefiniaj valoroj de 
      <frm><k>a</k></frm> a&ubreve; <frm><k>b</k></frm>:
      <frm>[<k>a</k>,+&#8734;[</frm> <klr>(&ccirc;iuj reeloj pli grandaj 
      ol <frm><k>a</k></frm>, inkluzive de <frm><k>a</k></frm>)</klr>,
      <frm>]-&#8734;,+&#8734;[</frm> ktp.
    </rim>
    <trd lng="en">interval</trd>
    <trd lng="pl">przedzia&lstroke;</trd>
  </snc>
  <trd lng="de">Intervall</trd>
  <trd lng="fr">intervalle</trd>
  <trdgrp lng="nl">
    <trd>interval</trd>,
    <trd>tussenruimte</trd>
  </trdgrp>
  <trd lng="ru">&c_i;&c_n;&c_t;&c_je;&c_r;&c_v;&c_a;&c_l;</trd>
</drv>

<drv mrk="interv.konvergx0o">
  <kap>konver&gcirc;<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 19</lok></fnt>
  <snc>
    <dif>
      <klr>(de reela <ref cel="seri.potenco0o">potencoserio</ref> 
      <frm><k>S</k>(<k>x</k>)</frm> &ccirc;irka&ubreve; 
      <frm><k>x</k><sub>0</sub></frm>)</klr>
      Malfermita <ref cel="interv.0o.MAT"><tld/>o</ref>
      <frm>]<k>x</k><sub>0</sub>-&rho;,<k>x</k><sub>0</sub>+&rho;[</frm>,
      kie <frm>&rho;</frm> signas la 
      <ref cel="radius.konvergxo0o">konver&gcirc;oradiuson</ref> de la serio.
    </dif>
  </snc>
  <trd lng="de">Konvergenzintervall</trd>
  <trd lng="en">interval of convergence</trd>
  <trd lng="fr">intervalle de convergence</trd>
  <trd lng="pl">przedzia&lstroke; zbie&zdot;no&sacute;ci</trd>
  <trd lng="ru">&c_i;&c_n;&c_t;&c_je;&c_r;&c_v;&c_a;&c_l; &c_s;&c_h;&c_o;&c_d;&c_i;&c_m;&c_o;&c_s;&c_t;&c_i;</trd>
</drv>
</art>
