  <art mrk="$Id: apolog.xml,v 1.20 2022/03/12 10:47:31 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>apolog</rad>/o
</kap>

<drv mrk="apolog.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">BELE</uzo>
  <uzo tip="stl">RAR</uzo>
  <snc>
    <dif>
      Mallonga <ref cel="alegor.0a">alegoria</ref> moralinstrua 
      <ref tip="super" cel="rakont.0o">rakonto</ref>, 
      formale nedistingebla disde proza 
      <ref tip="sin" cel="parabo.0o.BELE">parabolo<sncref/></ref>
      a&ubreve; versa <ref tip="sin" cel="fabl.0o">fablo</ref> (la
      diferenco estas, ke la terminon <tld/>o oni kutime rezervas por fabloj
      a&ubreve; paraboloj de antikvaj a&ubreve; orientaj tradicioj):
      <ekz>
        tre sa&gcirc;a pastro <klr>[&#x2026;]</klr> elpensis sekvantan
        <tld/>on:
        la faraono estas la suno, la kronprinco la luno, kiam la
        lumantan dion sekvas de malproksime la luno, ni havas la
        helecon tage kaj la helecon nokte
	<fnt><bib>Far1</bib>, <lok>&ccirc;ap. 14a.</lok></fnt>;
      </ekz>
      <ekz>
        la dira&jcirc;oj <klr>[de <nom>Walther von der Vogelweide</nom>]</klr> rimi&gcirc;as pare, enhavas
        parte apologojn <klr>[&#x2026;]</klr> instruajn kaj senstrofajn
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=101683">Walther von der Vogelweide</url></lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_p;&c_o;&c_l;&c_ja;&c_g;</trd>,
    <trd>&c_p;&c_r;&c_y;&c_t;&c_ch;&c_a;</trd>
  </trdgrp>
  <trd lng="ca">ap&ograve;leg</trd>
  <trdgrp lng="de">
    <trd>Apolog</trd>,
    <trd>Gleichnis</trd>,
    <trd>Lehrfabel</trd>
  </trdgrp>
  <trd lng="en">apologue</trd>
  <trd lng="es">ap&oacute;logo</trd>
  <trdgrp lng="fa">
    <trd>&a_H;&f_k;&a_A;&f_y;&a_t; &a_A;&a_kh;&a_l;&a_A;&a_q;&f_y;</trd>,
    <trd>&a_t;&a_m;&a_th;&f_y;&a_l;</trd>
  </trdgrp>
  <trd lng="fr">apologue</trd>
  <trd lng="he">&mem;&tav;&nun;&tsadi;&lamed;</trd>
  <trd lng="hu">tanmese</trd>
  <trd lng="lat">apologus, i</trd>
  <trd lng="nl">apoloog</trd>
  <trdgrp lng="ru">
    <trd>&c_b;&c_a;&c_s;&c_n;&c_ja;</trd>,
    <trd>&c_p;&c_r;&c_i;&c_t;&c_ch;&c_a;</trd>,
    <trd>&c_a;&c_p;&c_o;&c_l;&c_o;&c_g;</trd>
  </trdgrp>
  <trd lng="sv">fabel</trd>
  <trd lng="uk">&#x430;&#x43F;&#x43E;&#x43B;&#x43E;&#x433;</trd>
</drv>
