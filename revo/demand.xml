<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>*</ofc>
      <rad>demand</rad>/i
    </kap>
    <drv mrk="demand.0i">
      <kap><ofc>*</ofc><tld/>i</kap>
      <gra><vspec>tr</vspec></gra>
      <snc>
        <dif>
          Peti pri sciigo, informo:
          <ekz>
            <tld/>i iun pri lia nomo;
          </ekz><ekz>
            <tld/>i pri la farto de iu<fnt>Z</fnt>,
          </ekz><ekz>
            <tld/>i pri la &gcirc;usta vojo, pri konsilo, pri
            ordonoj<fnt>B</fnt>;
          </ekz><ekz>
            <tld/>i konsilon de la pastroj
            <fnt><bib>Far3</bib>, <lok>&ccirc;ap. 6</lok></fnt>;
          </ekz><ekz>
            <tld/>i ies permeson<fnt>Z</fnt>;
          </ekz><ekz>
            <tld/>i la opinion de l' &ccirc;efpastroj
            <fnt><bib>Far3</bib>, <lok>&ccirc;ap. 15</lok></fnt>;
          </ekz><ekz>
            sin <tld/>i &ccirc;u...<fnt>Z</fnt>.
          </ekz>
        </dif>
      </snc>
      <trd lng="cs">pt&aacute;t se</trd>
      <trd lng="de">fragen</trd>
      <trd lng="en">ask</trd>
      <trd lng="es">preguntar</trd>
      <trdgrp lng="fr">
        <trd>demander<klr tip="ind"> (poser une question)</klr></trd>,
        <trd>interroger</trd>,
        <trd>poser une <ind>question</ind></trd>
      </trdgrp>
      <trd lng="hu">k&eacute;rdez</trd>
      <trdgrp lng="nl">
        <trd>vragen<klr tip="ind"> (een vraag stellen)</klr></trd>,
        <trd>een <ind>vraag</ind> stellen</trd>
      </trdgrp>
      <trd lng="ru">&c_s;&c_p;&c_r;&c_o;&c_s;&c_i;&c_t;&c_mol;</trd>
      <trd lng="sk">p&yacute;ta&tcaron; sa</trd>
      <trd lng="sv">fr&aring;ga</trd>
      <trd lng="tr">sormak</trd>
      <trd lng="vo">s&auml;k&ouml;n</trd>
    </drv>
    <drv mrk="demand.0o">
      <kap><tld/>o</kap>
      <snc>
        <dif>
          Vortoj de <tld/>anto.
        </dif>
      </snc>
      <snc>
        <dif>
          Problemo, temo pridiskutota:
          <ekz>
            la <tld/>o pri internacia lingvo<fnt>Z</fnt>;
          </ekz><ekz>
            estas nur <tld/>o pri la tempo;
          </ekz><ekz>
            <tld/>o pri vivo a&ubreve; morto<fnt>Z</fnt>;
          </ekz><ekz>
            la <tld/>o estas pri...
            <klr>(a&ubreve;: &ccirc;u...)</klr>;
          </ekz><ekz>
            fari, eldiri, starigi<fnt>Z</fnt>,
            meti<fnt>Z</fnt>, levi<fnt>Z</fnt>,
            prezenti, adresi<fnt>Z</fnt>, direkti, solvi,
            decidi <tld/>on<fnt>Z</fnt>;
          </ekz><ekz>&gcirc;i havas ankora&ubreve; signon de <tld/>o
            <fnt><bib>PrV</bib></fnt>
            <klr>(estas tute ne certa.
              <ref tip="sin" cel="bird.0o">birdo</ref>)</klr></ekz><ekz>
            <tld/>a pronomo, signo.
          </ekz>
        </dif>
        <rim>
          Oni zorge evitu la eraran uzon de <em>demando</em> en la signifo de
          <em>peto</em>.
        </rim>
      </snc>
      <trd lng="de">Frage</trd>
      <trdgrp lng="es">
        <trd>pregunta</trd>,
        <trd>cuesti&oacute;n</trd>
      </trdgrp>
      <trdgrp lng="fr">
        <trd>demande<klr tip="ind"> (question)</klr></trd>,
        <trd>interrogation</trd>,
        <trd>question</trd>
      </trdgrp>
      <trd lng="hu">k&eacute;rd&eacute;s</trd>
      <trd lng="nl">vraag</trd>
      <trd lng="ru">&c_v;&c_o;&c_p;&c_r;&c_o;&c_s;</trd>
      <trd lng="sk">ot&aacute;zka</trd>
      <trd lng="sv">fr&aring;ga</trd>
      <trd lng="tr">soru</trd>
      <trd lng="vo">s&auml;k</trd>
    </drv>
    <drv mrk="demand.0osigno">
      <kap><tld/>osigno</kap>
      <snc>
        <dif>
          <ref tip="malprt" cel="interp3.0o">Interpunkcia</ref>
          <ref cel="sign.0o.KOMP">signo</ref> <ctl>?</ctl>, en
          Esperanto kaj multaj aliaj lingvoj uzata fine de
          <tld/>aj frazoj.
        </dif>
      </snc>
      <trd lng="en">question mark</trd>
      <trd lng="es">signo de <ind>interrogaci&oacute;n</ind></trd>
      <trd lng="hu">k&eacute;rd&odblac;jel</trd>
      <trd lng="nl">vraagteken</trd>
      <trd lng="ru">&c_v;&c_o;&c_p;&c_r;&c_o;&c_s;&c_i;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j; &c_z;&c_n;&c_a;&c_k;</trd>
      <trd lng="sk">ot&aacute;znik</trd>
    </drv>
  </art>
