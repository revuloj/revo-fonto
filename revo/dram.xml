<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>dram</rad>/o
</kap>
<drv mrk="dram.0o">
  <kap><tld/>o</kap>
  <snc mrk="dram.0o.gxenro">
    <uzo tip="fak">TEA</uzo>
    <dif>
      <ref tip="super" cel="teatr.0ajxo">Teatra&jcirc;o</ref>,
      en kiu tragikeco kaj komikeco alternas:
      <ekz>
        la <tld/>oj de &Scirc;ekspiro.
      </ekz>
    </dif>
  </snc>
  <snc mrk="dram.0o.teatrajxo">
    <ref tip="dif" cel="teatr.0ajxo">teatra&jcirc;o</ref>
  </snc>
  <snc mrk="dram.0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Terura okazo.
    </dif>
    <refgrp tip="vid">
      <ref cel="fatal.0o">fatalo</ref>,
      <ref cel="katast.0o">katastrofo</ref>,
      <ref cel="traged.0o">tragedio</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Drama</trd>
  <trd lng="fr">drame</trd>
  <trd lng="ru">&c_d;&c_r;&c_a;&c_m;&c_a;</trd>
  <trd lng="sv">drama</trd>
</drv>

<drv mrk="dram.0a">
  <kap><tld/>a</kap>
  <snc mrk="dram.0a.gxenra">
    <dif>
      Entenanta tragikajn kaj komikajn erojn.
    </dif>
    <trd lng="de">tragikomisch</trd>
    <trd lng="sv">dr&aring;plig</trd>
  </snc>
  <snc mrk="dram.0a.teatra">
    <uzo tip="fak">TEA</uzo>
    <dif>
      Teatra.
    </dif>
    <trd lng="de">Theater-</trd>
    <trd lng="sv">teatrisk</trd>
  </snc>
  <snc mrk="dram.0a.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Tre emociiga:
      <ekz>
        <tld/>a situacio.
      </ekz>
    </dif>
    <trd lng="de">dramatisch</trd>
    <trd lng="ru">&c_d;&c_r;&c_a;&c_m;&c_a;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
    <trd lng="sv">dramatisk</trd>
  </snc>
  <adm>
    Mankas ekz-oj por pravigi kaj precizigi la sencnuancojn.
    La unua senco aspektas al mi nefidinda. <aut>MB</aut>
  </adm>
  <trd lng="fr">dramatique</trd>
</drv>

<drv mrk="dram.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <dif>
      Igi <tld/>a:
      <ekz>
        la romantikaj poetoj ofte <tld/>igis sian vivon.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">dramatisieren</trd>
  <trd lng="fr">dramatiser</trd>
  <trd lng="ru">&c_d;&c_r;&c_a;&c_m;&c_a;&c_t;&c_i;&c_z;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trd lng="sv">dramatisera</trd>
</drv>
</art>
