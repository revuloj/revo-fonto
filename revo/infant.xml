<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: infant.xml,v 1.24 2023/11/19 10:22:12 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>infanteri</rad>/o <fnt><bib>PV</bib></fnt>  
</kap>
<drv mrk="infant.0o">
  <kap><tld/>o</kap>
  <snc mrk="infant.0o.MIL">
    <uzo tip="fak">MIL</uzo>
    <dif>
      Parto de <ref tip="malprt" cel="milit.0istaro">militistaro</ref>, 
      kiu batalas kaj ordinare transloki&gcirc;as piede:
      <ekz>
        post ili iris du malgrandaj infanteriaj ta&ccirc;mentoj, unu armita per lancoj, la
        alia per hakiloj
        <fnt>
          <bib>Far1</bib>
          <lok>&Ccirc;apitro I</lok>
        </fnt>;
      </ekz>
      <ekz>
        la infanteria kapitano forte min forkis: mirinde lerte li, kanajlo, manovras la
        kartojn
        <fnt>
          <bib>Revizoro</bib>
          <lok>Akto dua</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="kavale.0o">kavalerio</ref>,
      <ref cel="artile.0o">artilerio</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_p;&c_ja;&c_h;&c_o;&c_t;&c_a;</trd>
  <trdgrp lng="cs">
    <trd>infanterie</trd>,
    <trd>p&ecaron;chota</trd>
  </trdgrp>
  <trdgrp lng="de">
     <trd>Infanterie</trd>,
     <trd>Fu&szlig;truppen</trd>
  </trdgrp>
  <trd lng="en">infantry</trd>
  <trd lng="es">infanter&iacute;a</trd>
  <trd lng="fr">infanterie</trd>
  <trd lng="hu">gyalogs&aacute;g</trd>
  <trd lng="it">fanteria</trd>
  <trd lng="ja">&#x6B69;&#x5175;&#x968A;  <pr>&#x307B;&#x3078;&#x3044;&#x305F;&#x3044;</pr></trd>
  <trd lng="nl">infanterie</trd>
  <trd lng="pt">infantaria<klr tip="amb"> (militar)</klr></trd>
  <trd lng="ru">&c_p;&c_je;&c_h;&c_o;&c_t;&c_a;</trd>
  <trd lng="sk">pechota</trd>
  <trd lng="sv">infanteri</trd>
  <trd lng="uk">&#x43F;&#x456;&#x445;&#x43E;&#x442;&#x430;</trd>
  <trdgrp lng="zh">
    <trd>&#x6B65;&#x5175; <pr>b&#xF9;b&#x12B;ng</pr></trd>,
    <trd>&#x6B65;&#x5175;&#x90E8;&#x961F; <pr>b&#xF9;b&#x12B;ngb&#xF9;du&#xEC;</pr></trd>,
    <trd>&#x6B65;&#x5175;&#x56E2; <pr>b&#xF9;b&#x12B;ngtu&#xE1;n</pr></trd>
  </trdgrp>
</drv>

<drv mrk="infant.0ano">
  <kap><tld/>ano</kap>
  <snc mrk="infant.0ano.MIL">
    <uzo tip="fak">MIL</uzo>
    <dif>
      <ref tip="super" cel="soldat.0o">Soldato</ref> de <tld/>o: 
      <ekz>
        li scivolis, &ccirc;u la <tld/>anoj iam povos sufi&ccirc;e proksimi&gcirc;i al 
        la malamikoj por efike ataki tiujn 
        <fnt>
          <aut>J. Francis</aut>,
          <vrk>La Granda Kaldrono</vrk>,
          <lok>1978</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_je;&c_h;&c_a;&c_c;&c_ib;&c_n;&c_je;&c_c;</trd>
  <trdgrp lng="cs">
    <trd>infanterista</trd>,
    <trd>p&ecaron;&scaron;&aacute;k</trd>
  </trdgrp>
  <trdgrp lng="de">
     <trd>Infanterist</trd>,
     <trd>Fu&szlig;soldat</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>infantryman</trd>,
    <trd>foot soldier</trd>
  </trdgrp>
  <trd lng="fr">fantassin</trd>
  <trd lng="hu">gyalogos<klr tip="amb"> (katona)</klr></trd>
  <trd lng="it">fante</trd>
  <trd lng="ja">&#x6B69;&#x5175;  <pr>&#x304B;&#x3061;&#x3044;&#x304F;&#x3055;</pr></trd>
  <trd lng="nl">infanterist</trd>
  <trdgrp lng="pt">
   <trd>soldado de infantaria</trd>, 
   <trd>infante<klr tip="amb"> (militar)</klr></trd> 
  </trdgrp>
  <trd lng="ru">&c_p;&c_je;&c_h;&c_o;&c_t;&c_i;&c_n;&c_je;&c_c;</trd>
  <trd lng="sk">pe&scaron;iak</trd>
  <trd lng="sv">infanterist</trd>
  <trd lng="uk">&#x43F;&#x456;&#x445;&#x43E;&#x442;&#x438;&#x43D;&#x435;&#x446;&#x44C;</trd>
  <trdgrp lng="zh">
    <trd>&#x6B65;&#x5175; <pr>b&#xF9;b&#x12B;ng</pr></trd>,
    <trd>&#x5C0F;&#x5352; <pr>xi&#x1CE;oz&#xFA;</pr></trd>,
    <trd>&#x6B65;&#x5175;&#x90E8;&#x961F; <pr>b&#xF9;b&#x12B;ngb&#xF9;du&#xEC;</pr></trd>
  </trdgrp>
</drv>
</art>
