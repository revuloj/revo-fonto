<drv mrk="rifuz.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      La ago <tld/>i a&ubreve; esprimo uzita por <tld/>i:
      <ekz>
        postulo ne pretendas, <tld/>o ne ofendas
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        ne ka&scirc;as multaj vortoj la <tld/>on
        <fnt>
          <bib>Ifigenio</bib>
        </fnt>;
      </ekz>
      <ekz>
        mi estas senkulpa, <klr>[&#x2026;]</klr> oni metis &gcirc;in malgra&ubreve; mia <tld/>o
        <fnt>
          <bib>ElektFab</bib>
          <lok>Kamarado Gaja</lok>
        </fnt>;
      </ekz>
      <ekz>
        &ccirc;i tiu demando estis farita per tono &gcirc;entila, sed samtempe tiel
        seka kaj malvarma, ke &gcirc;i havis la saman signifon, kiel klara <tld/>o
        <fnt>
          <bib>Marta</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_d;&c_m;&c_o;&c_v;&c_a;</trd>
  <trdgrp lng="cs">
    <trd>odep&rcaron;en&iacute;</trd>,
    <trd>odm&iacute;tnut&iacute;</trd>,
    <trd>odvrhnut&iacute;</trd>,
    <trd>zam&iacute;tnut&iacute;</trd>
  </trdgrp>
  <trd lng="de">Weigerung</trd>
  <trd lng="en">refusal</trd>
  <trd lng="fr">refus</trd>
  <trdgrp lng="ja">
    <trd>&#x62D2;&#x7D76;  <pr>&#x304D;&#x3087;&#x305C;&#x3064;</pr></trd>,
    <trd>&#x62D2;&#x5426;  <pr>&#x304D;&#x3087;&#x3072;</pr></trd>,
    <trd>&#x8F9E;&#x9000;  <pr>&#x3058;&#x305F;&#x3044;</pr></trd>
  </trdgrp>
  <trd lng="pl">odmowa</trd>
  <trd lng="ru">&c_o;&c_t;&c_k;&c_a;&c_z;</trd>
  <trdgrp lng="sk">
    <trd>odmietnutie</trd>,
    <trd>odvrhnutie</trd>,
    <trd>zamietnutie</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_v;&c_ib;&c_d;&#x43C;&#x43E;&c_v;&c_a;</trd>,
    <trd>&c_v;&c_ib;&c_d;&#x43C;&#x43E;&c_v;&#x43B;&c_je;&#x43D;&#x43D;&#x44F;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x62D2;&#x7D55; <pr>j&#xF9;ju&#xE9;</pr></trd>,
    <trd>&#x62D2;&#x7EDD; <pr>j&#xF9;ju&#xE9;</pr></trd>,
    <trd>&#x63A8;&#x5374; <pr>tu&#x12B;qu&#xE8;</pr></trd>,
    <trd>&#x63A8;&#x537B; <pr>tu&#x12B;qu&#xE8;</pr></trd>
  </trdgrp>
</drv>

<drv mrk="rifuz.for0i">
  <kap>for<tld/>i,
     <var><kap><ofc>*</ofc><tld/>i&gcirc;i</kap></var>
  </kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="rifuz.for0i.KOMUNE">
    <dif>
      Tute <ref tip="vid" cel="rezign.0i">rezigni</ref>:
      <ekz>
        gardu vin, ke vi ne for<tld/>u la parolanton
        <fnt>
          <bib>NT</bib>
          <lok>Hebreoj 12:25</lok>
        </fnt>;
      </ekz>
      <ekz>
        mia fian&ccirc;o estus preta for<tld/>i mian manon
        <fnt>
          <bib>Fab3</bib>
          <lok>Du pavimbatiloj</lok>
        </fnt>;
      </ekz>
      <ekz>
        kiam oni for<tld/>as la mondon kaj sin mem, tiam oni por &ccirc;iam pereas
        <fnt>
          <bib>Fab3</bib>
          <lok>&Scirc;tono de la sa&gcirc;uloj</lok>
        </fnt>;
      </ekz>
      <ekz>
         neniu povas for<tld/>i sian parencecon
        <fnt>
          <bib>Fab3</bib>
          <lok>Supo el kolbasaj bastonetoj</lok>
        </fnt>;
      </ekz>
      <ekz>
         tre forte mi dezirus for<tld/>i mian por mi tro turmentan rolon
        <fnt>
          <bib>Paroloj</bib>
          <vrk>Parolado anta&ubreve; la Kvina Kongreso Esperantista en Barcelona en la 6a de septembro
          1909</vrk>
        </fnt>.
      </ekz>
    </dif>
    <rim>
      La fundamenta &leftquot;<tld/>i&gcirc;i&rightquot; en la senco &leftquot;rezigni&rightquot; &scirc;ajnas nelogika, kaj fakte ne estas uzata.
    </rim>
    <trdgrp lng="de">
      <trd>verleugnen</trd>,
      <trd>sich <ind>abwenden</ind></trd>,
      <trd>verzichten</trd>
    </trdgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_d;&c_m;&c_o;&c_v;&c_ib;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_v;&c_y;&c_r;&c_a;&c_ch;&c_y;&c_s;&c_ja;</trd>,
    <trd>&c_z;&c_r;&c_a;&c_ch;&c_y;&c_s;&c_ja;</trd>,
    <trd>&c_a;&c_d;&c_c;&c_u;&c_r;&c_a;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_v;&c_y;&c_c;&c_u;&c_r;&c_a;&c_c;&c_c;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>forgo</trd>,
    <trd>forswear</trd>, <trd>renounce</trd>, <trd>relinquish</trd>,
    <trd>repudiate</trd>
  </trdgrp>
  <trd lng="fr">renoncer &agrave;</trd>
  <trdgrp lng="hu">
    <trd>lemond <klr tip="ind">(vmir&odblac;l)</klr></trd>,
    <trd>eltasz&iacute;t <klr tip="ind">(mag&aacute;t&oacute;l)</klr></trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x56FA;&#x8F9E;&#x3059;&#x308B;  <pr>&#x3053;&#x3058;&#x3059;&#x308B;</pr></trd>,
    <trd>&#x62D2;&#x5426;&#x3059;&#x308B;  <pr>&#x304D;&#x3087;&#x3072;&#x3059;&#x308B;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>afstaan</trd>,
    <trd>verstoten</trd>,
    <trd>van de <ind>hand</ind> wijzen</trd>,
    <trd>opgeven</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>wyrzeka&cacute; si&eogonek;</trd>,
    <trd>wymawia&cacute; si&eogonek;</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_o;&c_t;&c_k;&c_a;&c_z;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_o;&c_t;&c_r;&c_je;&c_ch;&c_mol;&c_s;&c_ja;</trd>
  </trdgrp>
  <trd lng="uk">&c_v;&c_ib;&c_d;&#x43C;&#x43E;&c_v;&#x43B;&#x44F;&c_t;&c_i;&c_s;&#x44F;</trd>
  <trdgrp lng="zh">
    <trd>&#x6368;&#x68C4; <pr>sh&#x11B;q&#xEC;</pr></trd>,
    <trd>&#x820D;&#x5F03; <pr>sh&#x11B;q&#xEC;</pr></trd>
  </trdgrp>
</drv>
