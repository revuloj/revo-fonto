<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>homoteti</rad>/o
</kap>
<drv mrk="homote.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc>
    <dif>
      <klr>(en <ref cel="spac.afina0o">afina spaco</ref>,
      kun centro O kaj rilato &lambda;)</klr>
      <ref cel="afin.0a.bildigo">Afina</ref>
      <ref tip="super" cel="bild.0igo">bildigo</ref>, kiu &jcirc;etas punkton
      M al &lambda;*(M-O)+O:
      <ekz>
        la centro de <tld/>o estas la nura punkto sen&scirc;an&gcirc;a per
        &gcirc;i;
      </ekz>
      <ekz>
        <tld/>o kun rilato pli granda ol unu grandigas la figurojn la&ubreve;
        &ccirc;i tiu rilato kaj konservas la angulmezurojn.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Homothetie</trd>
  <trd lng="en">homothety</trd>
  <trd lng="fr">homoth&eacute;tie</trd>
  <trd lng="ru">&c_g;&c_o;&c_m;&c_o;&c_t;&c_je;&c_t;&c_i;&c_ja;</trd>
</drv>
<drv mrk="homote.0a">
  <kap><tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc mrk="homote.0a.figuroj">
    <fnt><bib>PIV1</bib></fnt>
    <dif>
      <klr>(p.p. du <ref cel="figur.geometria0o">figuroj</ref>)</klr>
      Tiaj, ke ekzistas <tld/>o, kiu &jcirc;etas unu al la alia:
      <ekz>
        <tld/>aj trianguloj <klr>(rilate <tld/>on kun centro en ilia komuna
        vertico)</klr>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="homote.0a.bildigo">
    <dif>
      <klr>(p.p. bildigo)</klr>
      Estanta <tld/>o.
    </dif>
  </snc>
  <trd lng="de">homothetisch</trd>
  <trd lng="en">homothetic</trd>
  <trd lng="fr">homoth&eacute;tique</trd>
  <trd lng="ru">&c_g;&c_o;&c_m;&c_o;&c_t;&c_je;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
</drv>
<drv mrk="homote.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(de <ref cel="figur.geometria0figuro">figuro</ref>)</klr>
      &Gcirc;ia bildo per <tld/>o.
    </dif>
  </snc>
</drv>
</art>

