<kap>
  <rad>Kopernik</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="kopernik.0o">
  <kap><tld/>o</kap>
  <snc mrk="kopernik.0o.PERS">
    <uzo tip="fak">PERS</uzo>
    <dif>
      <nom>Niklas Koppernigk</nom> (1473-1543, latine <trd lng="lat">Nicolaus <ind>Copernicus</ind></trd>, pole
      <trd lng="pl">Miko&lstroke;aj <ind>Kopernik</ind></trd>),
      katedralestro, kuracisto kaj <ref tip="lst" lst="voko:historiaj_personoj" cel="astron.0o">astronomo</ref>,
      publikiginto de suncentra modelo de la universo kaj
      klariginta la &scirc;ovi&gcirc;on de la printempa punkto per direkto&scirc;an&gcirc;o de la terakso:
      <ekz>
        la morto de <tld/>o
        <fnt>
          <bib>FK</bib>
        </fnt>;
      </ekz>
      <ekz>
        la evoluteorio <klr>[&#x2026;]</klr> kompareblas la&ubreve; sia skalo nur al tiu, kiun faris siatempe <tld/>o
        <fnt>
          <bib>Monato</bib>
          <aut>Nikolao Gudskov</aut>
          <vrk><url ref="&Monato;/2009/009858.php">La mondrevolucia verko finfine en Esperanto</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        &ccirc;u Jesuo, <tld/>o, Darvino kaj aliaj pioniroj ne renkontis similajn protestojn kaj dubojn
        <fnt>
          <bib>Monato</bib>
          <aut>H&aring;kan Lundberg</aut>
          <vrk><url ref="&Monato;/2005/008703.php">La libro de la vivo</url></vrk>
        </fnt>?
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_M;&c_ib;&c_k;&c_a;&c_l;&c_a;&c_j; <ind>&c_K;&c_a;&c_p;&c_e;&c_r;&c_n;&c_ib;&c_k;</ind></trd>
  <trd lng="cs">Kopern&iacute;k</trd>
  <trd lng="de">Nikolaus <ind>Kopernikus</ind></trd>
  <trd lng="en">Nicolaus Copernicus</trd>
  <trd lng="fa">&a_n;&f_y;&f_k;&a_l;&a_A;&a_s; <ind>&f_k;&f_p;&a_r;&a_n;&f_y;&f_k;</ind></trd>
  <trd lng="fr">Copernic<klr tip="ind"> (Nicolas)</klr></trd>
  <trd lng="hu">Nikolausz <ind>Kopernikusz</ind></trd>
  <trd lng="it">Copernico</trd>
  <trd lng="ja">&#x30B3;&#x30DA;&#x30EB;&#x30CB;&#x30AF;&#x30B9;</trd>
  <trd lng="nl">Nicolaas <ind>Copernicus</ind></trd>
  <trd lng="pt">Cop&eacute;rnico, Nicolau</trd>
  <trd lng="ru">&c_N;&c_i;&c_k;&c_o;&c_l;&c_a;&c_j; <ind>&c_K;&c_o;&c_p;&c_je;&c_r;&c_n;&c_i;&c_k;</ind></trd>
  <trd lng="sk">Kopern&iacute;k</trd>
  <trd lng="zh">&#x5C3C;&#x53E4;&#x62C9;&#x54E5;&#x767D;&#x5C3C; <pr>n&#xED;g&#x1D4;l&#x101;g&#x113;b&#xE1;in&#xED;</pr></trd>
</drv>
