<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>dolor</rad>/i
</kap>
<drv mrk="dolor.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <uzo tip="klr">(io)</uzo>
    <dif>
      Sentigi al iu tre malagrablan korpan a&ubreve; spiritan impreson:
      <ekz>ne <tld/>as frapo sur fremda kapo<fnt><bib>PrV</bib></fnt>;</ekz>
      <ekz>
        tia operacio tre <tld/>as<fnt>Z</fnt>;
      </ekz>
      <ekz>
        ili batis min sed &gcirc;i min ne <tld/>is
        <fnt>(<aut>Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
        <lok>Sentencoj 23, 35</lok>)</fnt>;
      </ekz>
      <ekz>
        dum la frosta vetero mia re&ubreve;matismo min <tld/>as;
      </ekz>
      <ekz>
        min <tld/>as &ccirc;itie<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la kruro <tld/>as min, al mi;
      </ekz>
      <ekz>
        <tld/>as lin la malfavoro
        <fnt>(<aut>Kabe</aut>: <vrk>La Faraono, 1a vol.</vrk>,
        <lok>&ccirc;ap. 16</lok>)</fnt>;
      </ekz>
      <ekz>
        forte min <tld/>as la nepovado helpi vin<fnt>Z</fnt>.
      </ekz>
      <ekz>
        mia kruro <tld/>as;
      </ekz>
      <ekz>
        &ccirc;u ne <tld/>is miaj ostoj post la longa voja&gcirc;o
        <fnt>(<aut>Kabe</aut>: <vrk>La Faraono, 2a vol.</vrk>,
        <lok>&ccirc;ap. 24</lok>)</fnt>;
      </ekz>
      <ekz>
        anka&ubreve; dum ridado povas <tld/>i la koro
        <fnt>(<aut>Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
        <lok>Sentencoj 14, 13</lok>)</fnt>.
      </ekz> 
    </dif>
    <refgrp tip="vid">
      <ref cel="sufer">suferigi</ref>, 
      <ref cel="turmen.0i">turmenti</ref>, 
      <ref cel="cxagre.0i">&ccirc;agreni</ref>, 
      <ref cel="aflikt.0i">aflikti</ref>, 
      <ref cel="dolor.0igi">dolorigi</ref>.
    </refgrp>
    <rim num="1">
      Oni uzas tiun sensufiksan formon se oni precipe konsideras a&ubreve;
      atentigas la subjektivan senton k la konscion de la estigata doloro
    </rim>
  </snc>
  <trdgrp lng="de">
    <trd>schmerzen</trd>,
    <trd>weh tun</trd>
  </trdgrp>
  <trd lng="en">hurt</trd>
  <trdgrp lng="fr">
    <trd>faire <ind>mal</ind><klr tip="ind"> (&ecirc;tre douloureux)</klr></trd>,
    <trd>&ecirc;tre <ind>douloureux</ind></trd></trdgrp> 
  <trd lng="ru">&c_b;&c_o;&c_l;&c_je;&c_t;&c_mol; <klr>(&c_d;&c_a;&c_v;&c_a;&c_t;&c_mol; &c_ch;&c_u;&c_v;&c_s;&c_t;&c_v;&c_o; &c_b;&c_o;&c_l;&c_i;)</klr></trd>
</drv>
<drv mrk="dolor.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <uzo tip="klr">(iu a&ubreve; io)</uzo>
    <dif>
      Ka&ubreve;zi al iu tre malagrablan korpan a&ubreve; spiritan impreson: 
      <ekz>
        kurante mi <tld/>igis al mi la piedon;
      </ekz>
      <ekz>
        &ccirc;u mi <tld/>igis vin?
      </ekz>
      <ekz>
        espero prokrastata <tld/>igas la koron
        <fnt>(<aut>Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
        <lok>Sentencoj 13, 12</lok>)</fnt> 
      </ekz>
    </dif>
    <rim num="2">
      Oni uzas tiun sufikshavan formon se oni precipe konsideras a&ubreve;
      atentigas la objektivan ka&ubreve;zon de la doloro
    </rim>
    <rim num="3">
      Oni ofte uzas la simplan vorton <em>dolori</em> anstata&ubreve;
      <em>dolorigi</em>. 
    </rim>
  </snc>
  <trdgrp lng="fr">
    <trd>faire <ind>mal</ind><klr tip="ind"> (causer une douleur)</klr></trd>,
    <trd>causer une <ind>douleur</ind></trd>,
    <trd>endolorir</trd></trdgrp> 
  <trd lng="ru">&c_p;&c_r;&c_i;&c_ch;&c_i;&c_n;&c_ja;&c_t;&c_mol; &c_b;&c_o;&c_l;&c_mol;</trd>
</drv>
<drv mrk="dolor.0o">
  <kap><tld/>o</kap>
  <snc num="1">
    <dif>
      Tre malagrabla korpa impreso:
      <ekz>
        senti en la brusto akran mordantan<fnt>Z</fnt>,
      </ekz>
      <ekz>
        kruelan <tld/>on.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="sufer">sufero</ref>.
    </refgrp>
  </snc>
  <snc num="2">
    <dif>
      Tre malagrabla spirita sento, malplezuro, aflikto:
      <ekz>
        mi havas <tld/>on en la animo
        <fnt>(<aut>Kabe</aut>: <vrk>La Faraono, 1a vol.</vrk>,
        <lok>&ccirc;ap. 4</lok>)</fnt>;
      </ekz>
      <ekz>
        rigardi kun <tld/>o la reciprokan fremdecon, kiu dividas inter si la
        filojn de sama lando<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">bolest</trd>
  <trd lng="de">Schmerz</trd>
  <trd lng="fr">douleur</trd>
  <trd lng="ru">&c_b;&c_o;&c_l;&c_mol;</trd>
</drv>
<drv mrk="dolor.0a">
  <kap><tld/>a</kap>
  <snc num="1">
    <dif>
      Sentiganta <tld/>on:
      <ekz>
        <tld/>a vundo, dento;
      </ekz>
      <ekz>
        tre <tld/>a estas por &gcirc;ojanto refalo tro subita en
        mal&gcirc;ojon<fnt>Z</fnt>;
      </ekz>
      <ekz>
        vi ne pu&scirc;u tiel <tld/>e<fnt>Z</fnt>.
      </ekz> 
    </dif>
    <trd lng="de">schmerzend</trd>
  </snc>
  <snc num="2">
    <dif>
      Esprimanta <tld/>on, estigita de <tld/>o:
      <ekz>
        <tld/>a krio;
      </ekz>
      <ekz>
        <tld/>ege plori<fnt>Z</fnt>.
      </ekz> 
    </dif>
  </snc>
  <trd lng="de">Schmerzens-</trd>
  <trd lng="fr">douloureux</trd>
  <trd lng="ru">&c_b;&c_o;&c_l;&c_je;&c_z;&c_n;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
</drv>
<drv mrk="dolor.0iga">
  <kap><tld/>iga</kap>
  <snc>
    <dif>
      <tld lit="D"/>iganta:
      <ekz>
        &scirc;i <tld/>ige surtretis la piedojn de la maljuna virino
        <fnt>(<aut>Zamenhof</aut>: <vrk>Fabeloj de Andersen,
        Ru&gcirc;aj &scirc;uoj</vrk>)</fnt>;
      </ekz>
      <ekz>
        la knaboj maldelikate kaj <tld/>ige premis
        la birdon en la manoj
        <fnt>(<aut>Zamenhof</aut>: <vrk>Fabeloj de Andersen,
        Najbaraj familioj</vrk>)</fnt>.
      </ekz> 
    </dif>
  </snc>
  <trd lng="fr">douloureux</trd>
  <trd lng="ru">&c_b;&c_o;&c_l;&c_je;&c_z;&c_n;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
</drv>
<drv mrk="dolor.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc>
    <dif>
      Senti <tld/>on. 
    </dif>
  </snc>
</drv>
<drv mrk="dolor.sen0a">
  <kap>sen<tld/>a</kap>
  <snc>
    <dif>
      Sentiganta nenian <tld/>on. 
    </dif>
  </snc>
  <trd lng="de">schmerzfrei</trd>
  <trd lng="fr">indolore</trd>
  <trd lng="ru">&c_b;&c_je;&c_z;&c_b;&c_o;&c_l;&c_je;&c_z;&c_n;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
</drv>
<drv mrk="dolor.sen0iga">
  <kap>sen<tld/>iga</kap>
  <snc>
    <dif>
      Foriganta la <tld/>on.  
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>schmerzlindernd</trd>,
    <trd>schmerzstillend</trd>
  </trdgrp>
  <trd lng="fr">calmant<klr tip="ind"> (la douleur)</klr></trd>
  <trdgrp lng="ru">
    <trd>&c_o;&c_b;&c_je;&c_z;&c_b;&c_o;&c_l;&c_i;&c_v;&c_a;&c_ju;&c_shch;&c_i;&c_j;</trd>,
    <trd>&c_b;&c_o;&c_l;&c_je;&c_u;&c_t;&c_o;&c_l;&c_ja;&c_ju;&c_shch;&c_i;&c_j;</trd>
  </trdgrp>
</drv>
</art>
