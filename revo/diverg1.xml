<vortaro>
<art mrk="$Id$">
  <kap>
    <rad>diver&gcirc;enc</rad>/o
  </kap>
<drv mrk="diverg1.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      <klr>(de <ref tip="vid" cel="vektor.0a">vektora</ref>
      <ref cel="kamp.0o.MAT">kampo</ref>)</klr>
      <ref tip="super" cel="skalar.0a">Skalara</ref> kampo,
      kiu &ccirc;e &ccirc;iu punkto egalas al la sumo de la
      <ref tip="vid" cel="deriv.parta0ajxo">partaj deriva&jcirc;oj</ref>
      de la komponantoj de la vektora kampo la&ubreve; &ccirc;iu la&ubreve;vica
      <ref tip="vid" cel="koordi.0o.MAT">koordinato</ref>:
      <ekz>
        la <tld/>on de <frm>E</frm> oni kutime signas per 
        <frm>&#x2207;.E</frm> a&ubreve; 
        <frm>div E = 
        &#x2211;&#x2202;<sub><k>i</k></sub>E<sub><k>i</k></sub></frm>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Divergenz</trd>
  <trd lng="en">divergence<klr tip="ind"> (of a field)</klr></trd>
  <trd lng="fr">divergence<klr tip="ind"> (d'un champ)</klr></trd>
  <trd lng="pl">dywergencja</trd>
  <trd lng="ru">&c_d;&c_i;&c_v;&c_je;&c_r;&c_g;&c_je;&c_n;&c_c;&c_i;&c_ja;</trd>
</drv>

<drv mrk="diverg1.sen0a">
  <kap>sen<tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(p.p. vektora <ref tip="super" cel="kamp.0o.MAT">kampo</ref>)</klr>
      Kies <ref cel="diverg1.0o"><tld/>o</ref> egalas al nulo.
    </dif>
    <ref tip="vid" cel="potenc1.vektora0o">vektora potencialo.</ref>
  </snc>
  <adm>
  Mi ne trovis auxtoritatan fonton, sed la termino estas tute
  logika. <aut>MB</aut>
  </adm>
  <trd lng="de">divergenzfreies<klr tip="amb"> (Vektorfeld)</klr></trd>
  <trd lng="en">zero-divergence<klr tip="amb"> (field)</klr></trd>
  <trdgrp lng="fr">
    <trd><klr tip="ind">(champ [&agrave; flux]) </klr>conservatif</trd>,
    <trd><klr tip="ind">(champ) </klr>indivergentiel</trd></trdgrp> 
  <trd lng="pl"><klr tip="amb">(pole) </klr>bez&zacute;r&oacute;d&lstroke;owe</trd>
  <trd lng="ru">&c_s;&c_o;&c_l;&c_je;&c_n;&c_o;&c_i;&c_d;&c_a;&c_l;&c_mol;&c_n;&c_o;&c_je;<klr tip="amb"> (&c_p;&c_o;&c_l;&c_je;)</klr></trd>
</drv>
</art>

