      <ekz>
        sen<tld/>a ser&ccirc;ado
        <fnt>
          <bib>Monato</bib>
          <aut>Zofia Banet-Fornalowa</aut>
          <vrk><url ref="&Monato;/2003/008093.html">Li semis bonon kaj
          belon</url></vrk>
          <lok>2003</lok>
        </fnt>;
      </ekz>
      <ekz>
        sen<tld/>a utopia&jcirc;o
        <fnt>
          <bib>Monato</bib>
          <aut>Garbhan Macaoidh</aut>
          <vrk><url ref="&Monato;/2004/008394.html">La angla, &ccirc;u troja
          &ccirc;evalo?</url></vrk>
          <lok>2004</lok>
        </fnt>;
      </ekz>
      <ekz>
        estas afero sen<tld/>a, kion mi povas fari?
        <fnt><aut>S. Engholm</aut>, <vrk>Vivo vokas</vrk>, 
        <lok>1946</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_je;&c_z;&c_n;&c_a;&c_d;&c_z;&c_je;&c_j;&c_n;&c_y;</trd>
  <trd lng="cs">beznad&ecaron;jn&yacute;</trd>
