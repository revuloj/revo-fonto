<drv mrk="esper.mal0igi">
  <kap>mal<tld/>igi,
  <var><kap>sen<tld/>igi</kap></var></kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="esper.mal0igi.KOMUNE">
    <dif>
      Senigi je <tld/>o:
      <ekz>
        mia kunparolanto parolis nur sian gepatran lingvon, kio mal<tld/>igis min a&ubreve;
        pelis al pantomimo
        <fnt>
          <bib>Monato</bib>
          <aut>Zlatko Ti&scaron;ljar</aut>
          <vrk><url ref="&Monato;/2007/009137.php">Helpi financi edukadon por e&ubreve;ropa
          konscio</url></vrk>
          <lok>2007</lok>
        </fnt>;
      </ekz>
      <ekz>
        katastrofo <klr>[&#x2026;]</klr> remalri&ccirc;igas kaj sen<tld/>igas la familion
        <fnt>
          <bib>Monato</bib>
          <aut>Donald Broadribb</aut>
          <vrk><url ref="&Monato;/2007/009098.php">Bele prezentita romano</url></vrk>
          <lok>2007</lok>
        </fnt>;
      </ekz>
      <ekz>
        la financa situacio <klr>[&#x2026;]</klr> i&gcirc;is mal<tld/>iga
        <fnt>
          <bib>Monato</bib>
          <aut>Roland Rotsaert</aut>
          <vrk><url ref="&Steloj;monato2/007217.html">Programaro</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        estas anka&ubreve; mal<tld/>ige vidi, ke da&ubreve;ris tre longe, de la unua publika atento
        pri la klimatoproblemo en la 1980aj jaroj &gcirc;is konkretaj malgrandaj kaj
        nesufi&ccirc;aj agoj
        <fnt>
          <bib>Monato</bib>
          <aut>Werner Fu&szlig;</aut>
          <vrk><url ref="&Monato;/2011/010273.php">Verdigu la dezertojn!</url></vrk>
          <lok>2011</lok>
        </fnt>;
      </ekz>
      <ekz>
        jen situacio teorie sen<tld/>iga, tamen prezentas sin du ebloj
        <fnt>
          <bib>Monato</bib>
          <aut>Zlatko Ti&scaron;ljar</aut>
          <vrk><url ref="&Monato;/2013/011135.php">Stato de la &scirc;tatoj de la iama
          Jugoslavio ... kaj la solvo</url></vrk>
          <lok>2013</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_b;&c_je;&c_z;&c_n;&c_a;&c_d;&c_z;&c_je;&c_j;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trd lng="cs">p&rcaron;iv&aacute;d&ecaron;t k zoufalstv&iacute;</trd>
  <trd lng="de">verzweifeln lassen</trd>
  <trd lng="fr">d&eacute;sesp&eacute;rer<klr tip="ind"> (tr. dir.)</klr>
  </trd>
  <trdgrp lng="hu">
    <trd>k&eacute;ts&eacute;gbe ejt</trd>,
    <trd>rem&eacute;nytelenn&eacute; tesz</trd>
  </trdgrp>
  <trd lng="nl">de <ind>hoop</ind> doen varen</trd>
  <trdgrp lng="pl"> 
    <trd>popada&cacute; w <ind>rozpacz</ind></trd>,
    <trd>doprowadza&cacute; do <ind>rozpaczy</ind></trd>,
    <trd>pozbawia&cacute; <klr>(wszelkiej)</klr> <ind>nadziei</ind>
    </trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_r;&c_i;&c_v;&c_je;&c_s;&c_t;&c_i; &c_v; &c_o;&c_t;&c_ch;&c_a;&c_ja;&c_n;&c_i;&c_je;</trd>
  <trd lng="sk">vohna&tcaron; do z&uacute;falstva</trd>
</drv>

<drv mrk="esper.sen0a">
