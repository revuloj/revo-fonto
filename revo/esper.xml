<drv mrk="esper.0eble">
  <kap><tld/>eble</kap>
  <snc mrk="esper.0eble.ARG">
    <dif>
      La&ubreve; tio, kion oni povas <tld/>i:
      <ekz>
        balda&ubreve; <tld/>eble venos iu a&ubreve; alia
        <fnt>
          <bib>Fab1</bib>
          <lok>Floroj de la malgranda Ida</lok>
        </fnt>;
      </ekz>
      <ekz>
        Dio <tld/>eble anka&ubreve; por mia koro donos konsilon
        <fnt>
          <bib>Fab3</bib>
          <lok>Ib kaj malgranda kristino</lok>
        </fnt>;
      </ekz>
      <ekz>
        ne estas <tld/>eble, ke la pordo de favorkoreco malfermi&gcirc;os por &scirc;i
        <fnt>
          <bib>Fab4</bib>
          <lok>Knabino, kiu pa&scirc;is sur panon</lok>
        </fnt>;
      </ekz>
      <ekz>
        &gcirc;i estas la unua kaj <tld/>eble anka&ubreve; la lasta fojo <klr>[&#x2026;]</klr>
        <fnt>
          <bib>Paroloj</bib>
          <vrk>Parolado anta&ubreve; la Kvara Kongreso Esperantista en Dresden en la 17a de a&ubreve;gusto
          1908</vrk>
        </fnt>;
      </ekz>
      <ekz>
        vi <tld/>eble faros al mi la honoron esti gasto de mia domo
        <fnt>
          <bib>BdV</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_m;&c_o;&c_zh;&c_n;&c_a; <ind>&c_s;&c_p;&c_a;&c_d;&c_z;&c_ja;&c_v;&c_a;&c_c;&c_c;&c_a;</ind></trd>,
