<drv mrk="somer.0a">
  <kap><tld/>a</kap>
  <snc mrk="somer.0a.KAL">
    <dif>
      Rilata al <tld/>o:
      <ekz>
        <tld/>aj fruktoj
        <fnt>
          <bib>MT</bib>
          <lok>Jeremia 40:12</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>a domo
        <klr>(vd <ref cel="dom.somer0o">somerdomo</ref>)</klr>
        <fnt>
          <bib>MT</bib>
          <lok>Amos 3:15</lok>
        </fnt>;
      </ekz>
      <ekz>
        varmeta <tld/>a nokto
        <fnt><bib>Voja&gcirc;Imp</bib> <lok>&ccirc;e Lev Tolstoj en Jasnaja
        Poljana</lok></fnt>;
      </ekz>
      <ekz>
        la tago de la <tld/>a tagnoktegaleco
        <fnt>
          <bib>Far2</bib>
          <lok>&Ccirc;apitro I</lok>
        </fnt>;
      </ekz>
      <ekz>
        morga&ubreve; li komencos sian <tld/>an voja&gcirc;on
        <fnt>
          <bib>Fab1</bib>
          <lok>Galo&scirc;oj de feli&ccirc;o</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_l;&c_je;&c_t;&c_n;&c_ib;</trd>
  <trd lng="ca">estival</trd>
  <trd lng="cs">letn&iacute;</trd>
