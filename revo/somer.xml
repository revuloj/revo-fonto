  <trd lng="pl">letni</trd>
  <trd lng="sk">letn&yacute;</trd>
  <trd lng="uk">&c_l;&c_ib;&c_t;&c_n;&c_ib;&c_j;</trd>
</drv>

<drv mrk="somer.0e">
  <kap><tld/>e</kap>
  <snc>
    <dif>
      Dum <tld/>o:
      <ekz>
        <tld/>e li administradis la malgrandan terposeda&jcirc;on
        <fnt>
          <bib>Fab3</bib>
          <lok>Ib kaj malgranda kristino</lok>
        </fnt>;
      </ekz>
      <ekz>
        estas ankora&ubreve; <tld/>e varme
        <fnt>
          <bib>LGA</bib>
          <lok>I.</lok>
        </fnt>;
      </ekz>
      <ekz>
        post la kunesto kun vi pasint<tld/>e mi fari&gcirc;is ankora&ubreve; pli sola
        <fnt>
          <bib>InfanTorent2</bib>
          <lok>Dua Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        nenio estas tiel nekredeble jubila kiel <tld/>e
        <fnt>
          <bib>VRA</bib>
          <lok>Bj&ouml;rn Erik H&ouml;ijer</lok>
        </fnt>;
      </ekz>
      <ekz>
        venont<tld/>e okazos aran&gcirc;o simila al la &jcirc;us pasinta
        <fnt>
          <bib>FSI</bib>
          <lok>IV</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_u;&c_l;&c_je;&c_t;&c_k;&c_u;</trd>,
    <trd>&c_l;&c_je;&c_t;&c_a;&c_m;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>im Sommer</trd>,
    <trd>sommers</trd>
  </trdgrp>
  <trd lng="ca">a l'<ind>estiu</ind></trd>
  <trdgrp lng="de">
    <trd>im <ind>Sommer</ind></trd>,
    <trd>sommers</trd>
  </trdgrp>
  <trd lng="fr">en &eacute;t&eacute;</trd>
  <trd lng="hu">ny&aacute;ron</trd>
  <trd lng="it">in <ind>estate</ind></trd>
  <trd lng="ja">&#x590F;&#x306B; <pr>&#x306A;&#x3064;&#x306B;</pr></trd>
  <trd lng="nl">'s <ind>zomers</ind></trd>
  <trd lng="pl">w <ind>lecie</ind></trd>
  <trd lng="ru">&c_l;&c_je;&c_t;&c_o;&c_m;</trd>
  <trd lng="sv">p&aring; <ind>sommaren</ind></trd>
  <trd lng="tr">yaz&inodot;n</trd>
  <trd lng="uk">&c_u;&c_l;&c_ib;&c_t;&c_k;&c_u;</trd>
