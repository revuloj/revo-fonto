<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>interpunkci</rad>/o
</kap>
<drv mrk="interp3.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <uzo tip="fak">TIP</uzo>
  <snc>
    <dif>
      Sistemo da skribaj <ref cel="sign.0o.KOMP">signoj</ref>,
      servantaj por apartigi la frazojn a&ubreve; la diversajn
      partojn de la frazo:
      <ekz>
        uzi la Zamenhofan <tld/>on;
      </ekz>
      <ekz>
        <tld/>o estas skribo de la silentoj en la parolado.
      </ekz>
    </dif>
    <refgrp tip="prt">
      <ref cel="cit.0iloj">citilo</ref>,
      <ref cel="demand.0osigno">demandosigno</ref>,
      <ref cel="punkt.du0o">dupunkto</ref>,
      <ref cel="kom.0o">komo</ref>,
      <ref cel="kramp.0o.TIP">krampo</ref>,
      <ref cel="kri.0signo">krisigno</ref>,
      <ref cel="punkt.0o.interpunkcia">punkto</ref>,
      <ref cel="punkt.tri0o">tripunkto</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_p;&c_u;&c_n;&c_k;&c_t;&c_u;&c_a;&c_c;&c_y;&c_ja;</trd>
  <trd lng="ca">puntuaci&oacute;</trd>
  <trdgrp lng="de">
    <trd>Interpunktion</trd>,
    <trd>Zeichensetzung</trd>
  </trdgrp>
  <trd lng="en">punctuation</trd>
  <trd lng="es">puntuaci&oacute;n</trd>
  <trd lng="fr">ponctuation</trd>
  <trdgrp lng="hu">
    <trd>k&ouml;zpontoz&aacute;s</trd>,
    <trd>interpunkci&oacute;</trd>
  </trdgrp>
  <trd lng="nl">interpunctie</trd>
  <trd lng="pt">pontua&ccedil;&atilde;o<klr tip="amb"> (gram&aacute;tica)</klr></trd>
  <trd lng="ru">&c_p;&c_u;&c_n;&c_k;&c_t;&c_u;&c_a;&c_c;&c_i;&c_ja;</trd>
</drv>

<drv mrk="interp3.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <uzo tip="fak">TIP</uzo>
  <snc>
    <dif>
      Apartigi per <tld/>aj signoj la frazojn a&ubreve; erojn de frazo.
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_t;&c_a;&c_v;&c_ib;&c_c;&c_mol; &c_z;&c_n;&c_a;&c_k;&c_ib; &c_p;&c_u;&c_n;&c_k;&c_t;&c_u;&c_a;&c_c;&c_y;&c_ib;</trd>,
    <trd>&c_s;&c_t;&c_a;&c_v;&c_ib;&c_c;&c_mol; &c_z;&c_n;&c_a;&c_k;&c_ib; &c_p;&c_r;&c_y;&c_p;&c_y;&c_n;&c_k;&c_u;</trd>
  </trdgrp>
  <trd lng="es">puntuar<klr> (poner los signos de puntuaci&oacute;n)</klr></trd>
  <trd lng="fr">ponctuer<klr tip="ind"> (placer la ponctuation)</klr></trd>
  <trdgrp lng="hu">
    <trd>k&ouml;zpontoz</trd>,
    <trd>pontot, vessz&odblac;t tesz</trd>
  </trdgrp>
  <trd lng="pt">pontuar<klr tip="amb"> (gram&aacute;tica)</klr></trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_t;&c_a;&c_v;&c_i;&c_t;&c_mol; &c_z;&c_n;&c_a;&c_k;&c_i; &c_p;&c_u;&c_n;&c_k;&c_t;&c_u;&c_a;&c_c;&c_i;&c_i;</trd>,
    <trd>&c_r;&c_a;&c_s;&c_s;&c_t;&c_a;&c_v;&c_i;&c_t;&c_mol; &c_z;&c_n;&c_a;&c_k;&c_i; &c_p;&c_u;&c_n;&c_k;&c_t;&c_u;&c_a;&c_c;&c_i;&c_i;</trd>
  </trdgrp>
</drv>
</art>
