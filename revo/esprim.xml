<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>*</ofc>
      <rad>esprim</rad>/i
    </kap>
    <drv mrk="esprim.0i">
      <kap><ofc>*</ofc><tld/>i</kap>
      <gra><vspec>tr</vspec></gra>
      <snc>
        <dif>
          Montri sian penson a&ubreve; senton per paroloj, gestoj a&ubreve; aliaj
          a&ubreve;deblaj a&ubreve; videblaj signoj:
          <ekz>
            se mi volas <tld/>i direkton, mi uzas akuzativon<fnt>Z</fnt>;
          </ekz><ekz>
            liaj rigardoj <tld/>is teruron;
          </ekz><ekz>
            <tld/>i koran dankon<fnt>Z</fnt>,
          </ekz><ekz>
            sian favoron<fnt>Z</fnt>,
          </ekz><ekz>
            opinion, deziron, &gcirc;ojon, kontentecon,  doloron.
          </ekz>
        </dif>
        <refgrp tip="sin">
          <ref cel="dir.el0i">eldiri</ref>.
        </refgrp>
      </snc>
      <trd lng="cs">vyj&aacute;d&rcaron;it</trd>
      <trd lng="en">express</trd>
      <trd lng="ru">&c_v;&c_y;&c_r;&c_a;&c_z;&c_i;&c_t;&c_mol;</trd>
    </drv>
    <drv mrk="esprim.0o">
      <kap><tld/>o</kap>
      <snc mrk="esprim.0o.ado">
        <dif>
          Montro de penso a&ubreve; sento per paroloj a&ubreve; gestoj:
          <ekz>
            mal&gcirc;oja <tld/>o ku&scirc;is sur &scirc;ia frunto.
          </ekz>
        </dif>
      </snc>
      <snc mrk="esprim.0o.ajxo">
        <dif>
          Dirmaniero:
          <ekz>
            tiu <tld/>o estas malklara, internacie nekomprenebla.
          </ekz>
        </dif>
      </snc>
      <snc mrk="esprim.0o.KOMP">
        <uzo tip="fak">MAT</uzo>
        <uzo tip="fak">KOMP</uzo>
        <dif>
          Sinsekvo da simboloj indikanta matematikan a&ubreve; programan
          objekton (<ref tip="prt" cel="valor.0o.mat">valoron</ref>).
          <ekz>
            egala&jcirc;o konsistas el du <tld/>oj kunigitaj per egalsigno.
          </ekz>
        </dif>
        <rim>
          Kompare kun <ref tip="sub" cel="formul.0o.MAT">formulo</ref>,
          <tld/>o estas pli faka kaj pli &gcirc;enerala: formulo estas
          <tld/>o relative grava matematika aserto, ekz-e la fina konkludo de
          simbola manipulado, dum <tld/>oj aperas anka&ubreve; meze de pruvo
          a&ubreve; derivado.
        </rim>
      </snc>
      <trd lng="cs">v&yacute;raz</trd>
      <trd lng="en">expression</trd>
      <trd lng="cs">v&yacute;raz</trd>
      <trd lng="ru">&c_v;&c_y;&c_r;&c_a;&c_zh;&c_je;&c_n;&c_i;&c_je;</trd>
    </drv>
    <drv mrk="esprim.0ilo">
      <kap><tld/>ilo</kap>
      <snc>
        <dif>
          Lingva rimedo por esprimi iun sencon a&ubreve; nuancon:
          <ekz>
            la penso starigas inter ideoj certan nombron da rilatoj,
            por kiuj la naciaj lingvoj ne &ccirc;iam disponas <tld/>ilojn
            <fnt><aut>G. Waringhien</aut>:
              <vrk>Lingvo kaj vivo.</vrk>
              <lok>Rotterdam: UEA, 1989. P.50.</lok>
            </fnt>;
          </ekz><ekz>
            <uzo tip="fak">KOMP</uzo>
            rekursiaj funkcioj estas eleganta <tld/>ilo por prezenti
            multajn klasikajn algoritmojn.
          </ekz>
        </dif>
      </snc>
      <trdgrp lng="en"><trd>expressive means</trd>,
      <trd><klr>(language)</klr> feature</trd></trdgrp>
      <trdgrp lng="ru"><trd>&c_i;&c_z;&c_o;&c_b;&c_r;&c_a;&c_z;&c_i;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_o;&c_je; &c_s;&c_r;&c_je;&c_d;&c_s;&c_t;&c_v;&c_o;</trd>,
        <trd>&c_s;&c_r;&c_je;&c_d;&c_s;&c_t;&c_v;&c_o; &c_v;&c_y;&c_r;&c_a;&c_zh;&c_je;&c_n;&c_i;&c_ja;</trd></trdgrp>
    </drv>
    <drv mrk="esprim.sub0o">
      <kap>sub<tld/>o</kap>
      <snc>
        <uzo tip="fak">MAT</uzo>
        <uzo tip="fak">KOMP</uzo>
        <dif>
          <tld lit="E"/>o rigardata kiel parto de alia <tld/>o:
          <ekz>
            &scirc;pari komunajn sub<tld/>ojn en programo;
          </ekz><ekz>
            redukti egalajn sub<tld/>ojn en algebra frakcio.
          </ekz>
        </dif>
      </snc>
      <trd lng="en">subexpression</trd>
      <trd lng="ru">&c_p;&c_o;&c_d;&c_v;&c_y;&c_r;&c_a;&c_zh;&c_je;&c_n;&c_i;&c_je;</trd>
    </drv>
  </art>

