  <trd lng="sv">alfabet</trd>
  <trdgrp lng="uk">
    <trd>&c_a;&c_b;&c_je;&c_t;&#x43A;&c_a;</trd>,
    <trd>&c_a;&#x43B;&c_f;&c_a;&c_v;&c_ib;&c_t;</trd>,
    <trd>&c_a;&c_z;&c_b;&c_u;&#x43A;&c_a;</trd>
  </trdgrp>
</drv>

<drv mrk="alfabe.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Rilata al <tld/>o:
      <ekz>
        por reeldono estus bonvena <ind><tld/>a indekso</ind>
        je la fino de la teksto
        <fnt><aut>W. Klag</aut>,
          <vrk>Facile legebla</vrk>,
          <bib>Monato</bib>,
          <lok>1994:2, p. 22a</lok>
        </fnt>;
        <trd lng="ru">&c_a;&c_l;&c_f;&c_a;&c_v;&c_i;&c_t;&c_n;&c_y;&c_j;
          &c_u;&c_k;&c_a;&c_z;&c_a;&c_t;&c_je;&c_l;&c_mol;</trd>
      </ekz><ekz>
        jen la respondoj (en <ind><tld/>a ordo</ind> de la
        &ccirc;efnomoj)
        <fnt>
          <aut>-</aut>,
          <vrk>Gravaj opinioj</vrk>,
          <bib>Monato</bib>,
          <lok>2004:3, p. 7a</lok>
        </fnt>.
        <trd lng="ru">&c_a;&c_l;&c_f;&c_a;&c_v;&c_i;&c_t;&c_n;&c_y;&c_j; &c_p;&c_o;&c_r;&c_ja;&c_d;&c_o;&c_k;</trd>
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_l;&c_mol;&c_f;&c_a;&c_b;&c_e;&c_t;&c_n;&c_y;</trd>
  <trd lng="cs">abecedn&iacute;</trd>
  <trdgrp lng="es">
    <trd>alfab&eacute;tico</trd>,
    <trd>alfab&eacute;tica</trd>
  </trdgrp>
  <trd lng="fr">alphab&eacute;tique</trd>
  <trdgrp lng="hu">
    <trd>bet&udblac;rendes</trd>,
    <trd>&aacute;b&eacute;c&eacute;-</trd>
  </trdgrp>
  <trd lng="id">alfabetis</trd>
  <trd lng="ja">&#x30A2;&#x30EB;&#x30D5;&#x30A1;&#x30D9;&#x30C3;&#x30C8;&#x306E;  [<ind>&#x3042;&#x308B;&#x3075;&#x3041;&#x3079;&#x3063;&#x3068;&#x306E;</ind>]</trd>
  <trd lng="pl">alfabetyczny</trd>
  <trd lng="pt">alfab&eacute;tico</trd>
  <trd lng="ro">alfabetic</trd>
  <trd lng="ru">&c_a;&c_l;&c_f;&c_a;&c_v;&c_i;&c_t;&c_n;&c_y;&c_j;</trd>
  <trd lng="sk">abecedn&yacute;</trd>
