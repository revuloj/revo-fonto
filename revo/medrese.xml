<vortaro>
  <art mrk="$Id: medrese.xml,v 1.5 2023/08/06 16:32:29 afido Exp $">
    <kap>
      <rad>medrese</rad>/o, <var><kap><rad var="a">madras</rad>/o</kap></var>
    </kap>

<drv mrk="medrese.0o">
  <kap><tld/>o, <var><kap><tld var="a"/>o</kap></var></kap>
  <uzo tip="fak">ISL</uzo>
  <snc mrk="medrese.0o.lernejo">
    <dif>
      <ref tip="super" cel="lern.0ejo.loko">Lernejo</ref>, en kiu
      oni instruas la&ubreve; principoj de <ref cel="islam.0o">islamo</ref>:
      <ekz>
        la <tld/>o de <nom>Ulugbek</nom> <klr>[&#8230;]</klr> estis unu el la plej bonaj ekleziaj
        universitatoj de islama Oriento en la 15a jarcento
        <fnt>
          <aut>Anatoli Ionesov</aut>
          <vrk><url ref="&Monato;/2006/008920.php"
              >Perlo &ccirc;e la Silka Vojo</url></vrk>
              <bib>Monato</bib>
          <lok>2006/08, p. 17</lok>
        </fnt>;
      </ekz>
      <ekz>
        <nom>&Hcirc;amza Nijazi</nom> <klr>[&#8230;]</klr> estis edukita en <klr>[&#8230;]</klr> <tld/>o
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=539423"
              >&Hcirc;amza &Hcirc;akimzoda Nijazi</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        studado en la <tld var="a"/>oj estis senpaga &ndash; al plej diligentaj studentoj oni pagis
        stipendiojn
        <fnt>
          <bib>Monato</bib>
          <aut>Vitalij kaj Anatolij Ionesov</aut>
          <vrk><url ref="https://www.monato.be/2010/009996.php"
              >Mirzo Ulugbek: granda re&gcirc;o de astronomio</url></vrk>
          <lok>2010</lok>
        </fnt>;
      </ekz>
      <ekz>
        kiam mi organizis karavanon kun 22 japanoj, <nom>Ionesov</nom> gastame kaj afable kondukis
        nin al la moskeoj kaj <tld/>oj
        <fnt>
          <aut>Yazaki Yoko</aut>
          <vrk><url ref="&Monato;/2006/009057.php"
              >Samarkando (2)</url></vrk>
              <bib>Monato</bib>
          <lok>2006/10, p. 8</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_m;&c_e;&c_d;&c_r;&c_a;&c_s;&c_e;</trd>
    <trd lng="ar">&a_m;&a_d;&a_r;&a_s;&a_t_marbuta;</trd>
    <trd lng="de">Madrasa</trd>
    <trd lng="en">madrasa</trd>
    <trd lng="fr">m&eacute;dersa</trd>
    <trd lng="nl">medresse</trd>
    <trd lng="ru">&c_m;&c_je;&c_d;&c_r;&c_je;&c_s;&c_je;</trd>
    <trd lng="tr">medrese</trd>
  </snc>
  <rim>
      La urbo &Ccirc;enajo anta&ubreve;e nomi&gcirc;is
      <ref tip="hom" cel="madras.0o">Madraso</ref>.
  </rim>
</drv>

  </art>

