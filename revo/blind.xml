  <trd lng="fr">s'<ind>aveugler</ind></trd>
  <trd lng="he">&lamed;&he;&tav;&ayin;&vav;&vav;&resh;</trd>
  <trd lng="id"><baz>buta</baz>membuta</trd>
  <trd lng="ja">&#22833;&#26126;&#12377;&#12427;  <pr>&#12375;&#12388;&#12417;&#12356;&#12377;&#12427;</pr></trd>
  <trdgrp lng="pl">
    <trd>o&sacute;lepn&aogonek;&cacute;</trd>,
