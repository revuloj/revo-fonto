        <klr>(<ref cel="konfuz.0igxi.perpleksigxi">konfuzi&gcirc;i</ref>s)</klr>
        <fnt>
          <bib>QuV</bib>
          <lok>&Ccirc;apitro XX</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_s;&c_mol;&c_l;&c_ja;&c_p;&c_l;&c_ja;&c_c;&c_c;&c_a;</trd>
  <trd lng="de">erblinden</trd>
