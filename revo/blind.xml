  <trd lng="en">blind person</trd>
  <trd lng="fr">aveugle<klr> (subst.)</klr></trd>
  <trd lng="he">&alef;&yod;&shin; &ayin;&yod;&vav;&vav;&resh;</trd>
  <trd lng="id">orang buta</trd>
  <trd lng="ja">&#30450;&#20154;  <pr>&#12418;&#12358;&#12376;&#12435;</pr></trd>
  <trd lng="pl">&sacute;lepiec</trd>
