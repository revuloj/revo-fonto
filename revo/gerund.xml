<art mrk="$Id: gerund.xml,v 1.21 2023/10/15 06:07:00 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>gerundi</rad>/o
</kap>
<drv mrk="gerund.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">GRA</uzo>
  <snc mrk="gerund.0o.fremda">
    <dif>
      Verba formo en iuj lingvoj (latina, rusa, angla, franca...),
      havanta 
      sencon de verba substantivo a&ubreve; aktiva participo (plejofte 
      participa):
      <ekz>
        la latina <tld/>o estas speco de deklinaciebla infinitivo.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_g;&c_je;&c_r;&c_u;&c_n;&c_d;&c_y;&c_j;</trd>,
      <trd>&c_d;&c_z;&c_je;&c_je;&c_p;&c_r;&c_y;&c_s;&c_l;&c_o;&c_w;&c_je;</trd>
    </trdgrp>
    <trd lng="ca">gerundi</trd>
    <trdgrp lng="de">
      <trd>Gerundium</trd>,
      <trd>Gerundivum</trd></trdgrp>
      <trd lng="en">gerund</trd>
    <trd lng="fr">g&eacute;rondif</trd>
    <trd lng="hu">gerundium</trd>
    <trd lng="nl">gerundium</trd>
    <trdgrp lng="pl">
      <trd>gerundium</trd>,
      <trd>rzeczownik ods&lstroke;owny</trd>
    </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_g;&c_je;&c_r;&c_u;&c_n;&c_d;&c_i;&c_j;</trd>,
      <trd>&c_d;&c_je;&c_je;&c_p;&c_r;&c_i;&c_ch;&c_a;&c_s;&c_t;&c_i;&c_je;</trd></trdgrp> 
  </snc>
  <snc mrk="gerund.0o.Esperanta">
    <uzo tip="stl">EVI</uzo>
    <fnt><bib>PV</bib></fnt>
    <dif>
      Adverba participo:
      <ekz>
        en la frazo <ctl>a&ubreve;dinte tian mensogon, li ekstaris</ctl> la 
        vorto <ctl>a&ubreve;dinte</ctl> estas <tld/>o.
      </ekz>
    </dif>
    <trd lng="ca">participi adverbial</trd>
    <trd lng="en">adverbial participle</trd>
  </snc>
  <trd lng="cs">gerundium</trd>
  <trd lng="es">gerundio</trd>
  <trd lng="ja">&#x52D5;&#x540D;&#x8A5E;  <pr>&#x3069;&#x3046;&#x3081;&#x3044;&#x3057;</pr></trd>
  <trd lng="pt">ger&uacute;ndio</trd>
  <trd lng="sk">prechodn&iacute;k</trd>
  <trdgrp lng="uk">
    <trd>&c_gu;&c_je;&c_r;&c_u;&#x43D;&c_d;&c_ib;&c_j;</trd>,
    <trd>&c_d;&c_ib;&c_jeu;&#x43F;&c_r;&c_i;&c_s;&#x43B;&c_ib;&c_v;&#x43D;&c_i;&#x43A;</trd>
  </trdgrp>
</drv>
</art>
