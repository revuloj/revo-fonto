<drv mrk="gerund.0o">
  <kap><tld/>o</kap>
  <snc num="1">
    <uzo tip="klr">(Latina gramatiko)</uzo>
    <dif>
      Deklinaciebla infinitivo, rigardata kiel substantiva formo de verbo.
    </dif>
    <trd lng="ru">&c_g;&c_je;&c_r;&c_u;&c_n;&c_d;&c_i;&c_j;</trd>
  </snc>
  <snc num="2">
    <uzo tip="klr">(Latinidaj, angla, esperanta gramatikoj)</uzo>
    <dif>
      Speco de sen&scirc;an&gcirc;a participo, kun senco de dependa propozicio tempa
      a&ubreve; ka&ubreve;za:
      <ekz>
        en la frazo "audinte tian mensogon, li ekstaris" la vorto
        "a&ubreve;dinte" estas <tld/>o.
      </ekz>
    </dif>
    <trd lng="ru">&c_d;&c_je;&c_je;&c_p;&c_r;&c_i;&c_ch;&c_a;&c_s;&c_t;&c_i;&c_je;</trd>
  </snc>
</drv>
