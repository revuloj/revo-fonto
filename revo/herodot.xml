<art mrk="$Id: herodot.xml,v 1.16 2023/11/15 16:45:19 revo Exp $">
<kap>
<rad>Herodot</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="herodot.0o">
  <kap><tld/>o</kap>
  <snc mrk="herodot.0o.PERS">
    <uzo tip="fak">PERS</uzo>
    <dif>
      Antikva greka <ref tip="lst" lst="voko:historiaj_personoj" cel="histor.0isto">historiisto</ref>
      kaj etnografiisto (proksimume 484 a.K. &mdash; 425 a.K.), verkinta &ccirc;irka&ubreve; la temo
      de la militoj inter grekoj kaj persoj:
      <ekz>
        <tld/>o estis &jcirc;urnalisto, kaj <nom>&Scirc;arazada</nom> estas nenio
        alia ol orienta simbolo de la vespera &jcirc;urnal-eldono
        <fnt>
        <aut>Karel &Ccirc;apek, trad. Miroslav Malovec</aut>,
        <vrk>La&ubreve;do de &jcirc;urnaloj</vrk>,
        <bib>LOdE</bib>,
        <lok>2000, numero 6a (68)</lok>
        </fnt>;
      </ekz>
      <ekz>
        la&ubreve; la dua opinio, &scirc;uldata al la verkisto <tld/>o, la etruskoj venis male el
        Malgrandazio
        <fnt>
          <bib>Monato</bib>
          <aut>Roberto Pigro</aut>
          <vrk><url ref="&Monato;/2012/010611.php">Italio plurlingva: la deveno de la
          etruska</url></vrk>
          <lok>2012</lok>
        </fnt>;
      </ekz>
      <ekz>
        pri Sogdio rakontas al ni verkoj de antikvaj historiistoj -
        <tld/>o, Eratos<klr>t</klr>eno, Plinio
        <fnt>
        <aut>Firdaus Shukurov</aut>,
        <vrk><url ref="http://www.esperanto.freenet.tj/">
        </url>Ta&gcirc;ikio - lando montara en Meza Azio</vrk>,
        <lok>2004</lok>
        </fnt>.
      </ekz>
    </dif>
    <bld lok="&WCU;/thumb/a/ae/Herodotus_world_map-eo.svg/800px-Herodotus_world_map-eo.svg.png" prm="PD">La mondo la&ubreve; Herodoto
        <fnt>
          <aut>Bibi Saint-Pol</aut>
          <lok><url ref="&WCW;/File:Herodotus_world_map-eo.svg">&WCW;/File:Herodotus_world_map-eo.svg</url></lok>
        </fnt>
    </bld>
  </snc>
  <trd lng="be">&c_G;&c_je;&c_r;&c_a;&c_d;&c_o;&c_t;</trd>
  <trd lng="cs">Herodoto</trd>
  <trd lng="de">Herodot</trd>
  <trd lng="en">Herodotus</trd>
  <trd lng="fa">&a_h;&a_r;&a_w;&a_d;&a_w;&a_t;</trd>
  <trd lng="fr">H&eacute;rodote</trd>
  <trd lng="it">Erodoto</trd>
  <trd lng="ja">&#x30D8;&#x30ED;&#x30C9;&#x30C8;&#x30B9;</trd>
  <trd lng="nl">Herodotus</trd>
  <trd lng="pl">Herodot</trd>
  <trd lng="pt">Her&oacute;doto</trd>
  <trd lng="sk">Herodoto</trd>
  <trd lng="uk">&c_G;&c_je;&c_r;&#x43E;&c_d;&#x43E;&c_t;</trd>
  <trd lng="zh">&#x5E0C;&#x7F57;&#x591A;&#x5FB7; <pr>x&#x12B;lu&#xF3;du&#x14D;d&#xE9;</pr></trd>
</drv>
