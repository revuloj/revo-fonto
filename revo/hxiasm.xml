    <rad>&hcirc;iasm</rad>/o
      <fnt><vrk><url ref="http://vortareto.free.fr/dictionnaire/fr-esp/c.htm">Lexique et dictionnaire m&eacute;dical fran&ccedil;ais-esp&eacute;ranto</url></vrk></fnt>,
    <var><kap><rad var="k">kiasm</rad>o <fnt><bib>PIV1</bib></fnt></kap></var>
</kap>
<drv mrk="hxiasm.0o">
  <kap><tld/>o,
    <var><kap><tld var="k"/>o</kap></var>
  </kap>
  <snc mrk="hxiasm.0o.BELE">
    <uzo tip="fak">BELE</uzo>
    <dif>
      Retorika stilfiguro, tia aran&gcirc;o de frazo, ke &gcirc;ia dua duono estas
      struktura kaja&ubreve; leksika inverso de la unua
      <ekz>
        <tld/>oj oftas en Biblio, ekzemple
        <ctl>multaj unuaj estos lastaj, kaj lastaj estos unuaj</ctl>.
      </ekz>
    </dif>
    <trd lng="en">chiasmus</trd>
    <trd lng="pl">chiazm</trd>
    <trd lng="ru">&c_h;&c_i;&c_a;&c_z;&c_m;</trd>
  </snc>
  <snc mrk="hxiasm.0o.ANA">
    <uzo tip="fak">ANA</uzo>
    <dif>
      Interkruci&gcirc;o de anatomia&jcirc;oj:
      <ekz>
        optika <tld/>o <klr>(interkruci&gcirc;o de la optikaj nervoj)</klr>
      </ekz>
    </dif>
    <trd lng="de">Chiasmus</trd>
    <trd lng="en">chiasm</trd>
    <trd lng="pl">skrzy&zdot;owanie</trd>
    <trd lng="ru">&c_p;&c_je;&c_r;&c_je;&c_k;&c_r;&c_jo;&c_s;&c_t;</trd>
  </snc>
  <trdgrp lng="uk">
    <trd>&#x445;&#x456;&#x430;&#x437;&#x43C;</trd>,
    <trd>&#x445;&#x456;&#x430;&#x437;&#x43C;&#x430;</trd>
  </trdgrp>
</drv>
</art>

