<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>mantel</rad>/o
</kap>
<drv mrk="mantel.0o">
  <kap>
  <ofc>*</ofc><tld/>o
  </kap>
  <snc mrk="mantel.0o.senmanika">
    <uzo tip="fak">TEKS</uzo>
    <dif>
      Vasta longa senmanika vesto, per kiu oni kovras la aliajn vestojn:
      <ekz>
        kozaka, kavaleria, kortega, re&gcirc;a <tld/>o
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="burnus.0o">burnuso</ref>,
      <ref cel="peleri.0o">pelerino</ref>.
    </refgrp>
    <trdgrp lng="ru">
      <trd>&c_p;&c_l;&c_a;&c_shch;</trd>,
      <trd>&c_n;&c_a;&c_k;&c_i;&c_d;&c_k;&c_a;</trd>
    </trdgrp>
  </snc>
  <snc mrk="mantel.0o.kunmanika">
    <uzo tip="fak">TEKS</uzo>
    <dif>
      Longa vesto kun manikoj por kovri la aliajn vestojn, sed ne tiel
      al&gcirc;ustigita kiel <ref tip="vid" cel="palt.0o">palto</ref>:
      <ekz>
        voja&gcirc;<tld/>o, pluv<tld/>o
      </ekz>
      <ref tip="super" cel="vest.super0o">supervesto</ref>,
      <ref tip="sub" cel="surtut.0o">surtuto</ref>,
      <ref tip="vid" cel="kitel.0o">kitelo</ref>.
    </dif>
    <trd lng="ru">&c_p;&c_l;&c_a;&c_shch;</trd>
  </snc>
  <snc mrk="mantel.0o.palto">
    <uzo tip="fak">TEKS</uzo>
    <dif>
      Palto por virinoj.
    </dif>
    <trdgrp lng="ru">
      <trd>&c_m;&c_a;&c_n;&c_t;&c_i;&c_l;&c_mol;&c_ja;</trd>,
      <trd>&c_zh;&c_je;&c_n;&c_s;&c_k;&c_o;&c_je; <ind>&c_p;&c_a;&c_l;&c_mol;&c_t;&c_o;</ind></trd>
    </trdgrp>
  </snc>
  <snc mrk="mantel.0o.trompsxanjo">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Tromp&scirc;ajno, preteksto:
      <ekz>
        sub <tld/>o de afableco li ka&scirc;as senmezuran egoismon
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="vual.0o">vualo</ref>,
      <ref cel="mask.0o">masko</ref>.
    </refgrp>
    <trdgrp lng="ru">
      <trd>&c_n;&c_a;&c_k;&c_i;&c_d;&c_k;&c_a;</trd>,
      <trd>&c_p;&c_o;&c_k;&c_r;&c_o;&c_v;</trd>
    </trdgrp>
  </snc>
  <trd lng="de">Mantel</trd>
  <trd lng="en">cloak</trd>
  <trd lng="nl">mantel</trd>
</drv>
</art>
