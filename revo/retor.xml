<art mrk="$Id: retor.xml,v 1.20 2023/10/20 19:20:37 revo Exp $">
<kap>
  <ofc>2</ofc>
  <rad>retor</rad>/o
</kap>
<drv mrk="retor.0o">
  <kap><tld/>o</kap>
  <snc mrk="retor.0o.instruanto">
    <dif>
      <klr>(&ccirc;e la antikvuloj)</klr> <ref tip="super" cel="hom.0o">Homo</ref>
      instruanta la arton trafe kaj elokvente paroli:
      <ekz>
        Zoilo (4-a jarcento anta&ubreve; Kristo) el Amfipolo estis helena sofisto, kineta
        filozofo kaj <tld/>o, a&ubreve;toro de akraj kritikoj pri Homero, pro kio li estis
        nomata <klr>[&#x2026;]</klr> vipo kontra&ubreve; Homero
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=50169">Zoilo</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_r;&c_y;&c_t;&c_a;&c_r;</trd>
    <trdgrp lng="hu">
      <trd>r&eacute;tor</trd>,
      <trd>besz&eacute;doktat&oacute;</trd>
    </trdgrp>
    <trd lng="nl">retor</trd>
    <trd lng="pl">retor</trd>
    <trd lng="pt">r&eacute;tor</trd>
    <trd lng="ro">orator</trd>
    <trd lng="ru">&c_r;&c_i;&c_t;&c_o;&c_r;</trd>
  </snc>
  <snc mrk="retor.0o.oratoro">
    <uzo tip="stl">FIG</uzo>
    <dif>
      <ref tip="super" cel="orator.0o">Oratoro</ref>, 
      kies parolado estas afekta, bombasta kaj senenhava:
      <ekz>
        <nom>Augustin Josef Gruber</nom> <klr>[&#x2026;]</klr> estis brila <tld/>o kaj
        kate<klr>[&hcirc;i]</klr>zisto, bone
        moderiganta, modesta episkopo
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=517621">Augustin Josef Gruber</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_n;&c_a;&c_p;&c_y;&c_sh;&c_l;&c_ib;&c_v;&c_y; &c_p;&c_r;&c_a;&c_m;&c_o;&c_w;&c_c;&c_a;</trd>
    <trd lng="de">Redner</trd>
    <trd lng="hu">dag&aacute;lyos sz&oacute;nok</trd>    
    <trd lng="nl">schoonprater</trd>
    <trd lng="pl">krasom&oacute;wca</trd>
    <trd lng="ro">vorbitor</trd>
    <trd lng="ru">&c_n;&c_a;&c_p;&c_y;&c_shch;&c_je;&c_n;&c_n;&c_y;&c_j; &c_o;&c_r;&c_a;&c_t;&c_o;&c_r;</trd>
  </snc>
  <trdgrp lng="cs">
    <trd>r&eacute;tor</trd>,
    <trd>&rcaron;e&ccaron;n&iacute;k</trd>
  </trdgrp>
  <trd lng="de">Rhetoriker</trd>
  <trd lng="en">rhetorician</trd>
  <trd lng="fr">rh&eacute;teur</trd>
  <trdgrp lng="ja">
    <trd>&#x96C4;&#x5F01;&#x8853;&#x6559;&#x5E2B;  <pr>&#x3086;&#x3046;&#x3079;&#x3093;&#x3058;&#x3085;&#x3064;&#x304D;&#x3087;&#x3046;&#x3057;</pr></trd>,
    <trd>&#x4FEE;&#x8F9E;&#x5B66;&#x6559;&#x5E2B;  <pr>&#x3057;&#x3085;&#x3046;&#x3058;&#x304C;&#x304F;&#x304D;&#x3087;&#x3046;&#x3057;</pr></trd>,
    <trd>&#x7F8E;&#x8F9E;&#x9E97;&#x53E5;&#x3092;&#x4E26;&#x3079;&#x308B;&#x96C4;&#x5F01;&#x5BB6;  <pr>&#x3073;&#x3058;&#x308C;&#x3044;&#x304F;&#x3092;&#x306A;&#x3089;&#x3079;&#x308B;&#x3086;&#x3046;&#x3079;&#x3093;&#x304B;</pr></trd>,
    <trd>&#x6F14;&#x8AAC;&#x5C4B;  <pr>&#x3048;&#x3093;&#x305C;&#x3064;&#x3084;</pr></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>re&ccaron;n&iacute;k</trd>,
    <trd>r&eacute;tor</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_r;&c_i;&c_t;&#x43E;&c_r;</trd>,
    <trd>&#x43F;&c_i;&c_sh;&#x43D;&#x43E;&#x43C;&#x43E;&c_v;&#x43D;&c_i;&c_j; &#x43E;&c_r;&c_a;&c_t;&#x43E;&c_r;</trd>
  </trdgrp>
</drv>
</art>
