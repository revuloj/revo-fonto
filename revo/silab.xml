<drv mrk="silab.0aro">
  <kap><tld/>aro</kap>
  <snc mrk="silab.0aro.TIP">
    <uzo tip="fak">TIP</uzo>
    <dif>
      <ref tip="super" cel="sistem.skrib0o.KOMUNE">Skribosistemo</ref>
      en kiu unuopaj signoj ordinare prezentas apartajn silabojn:
      <ekz>
        oni ne malofte legas, ke la kipra <tld/>aro estis
        de&ccirc;ifrita en 1871 de la angla epigrafisto
        George Smith
        <fnt>
          <aut>R. Pigro</aut>,
          <vrk>Kio estas la kipra silabaro?</vrk>,
          <bib>Monato</bib>,
          <lok>2014</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_t;&c_a;&c_b;&c_l;&c_ib;&c_c;&c_a; <ind>&c_s;&c_k;&c_l;&c_a;&c_d;&c_o;&c_w;</ind></trd>
  <trdgrp lng="cs">
    <trd>tabulka slabik</trd>,
    <trd>u n&ecaron;kter&yacute;ch jazyk&uring;
    slou&zcaron;&iacute;c&iacute; jako abeceda</trd>
  </trdgrp>
  <trd lng="en">syllabary</trd>
  <trd lng="es">silabario</trd>
  <trd lng="fr">syllabaire</trd>
  <trd lng="pl">sylabariusz</trd>
  <trd lng="ro">silabar</trd>
  <trd lng="sk">tabu&lcaron;ka slab&iacute;k</trd>
  <trd lng="uk">&c_t;&c_a;&c_b;&#x43B;&c_i;&c_c;&#x44F; &c_s;&#x43A;&#x43B;&c_a;&c_d;&c_ib;&c_v;</trd>
