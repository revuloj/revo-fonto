<kap>
  <rad>pa&ubreve;perism</rad>/o
</kap>
<drv mrk="pauxpe.0o">
  <kap><tld/>o</kap>
  <snc>
  <uzo tip="fak">POL</uzo>
    <dif>
      Multeco de malri&ccirc;uloj, konsiderata kiel socia malfeli&ccirc;o,
      aparte tiu okazante en la frua 19a jc:
      <ekz>
        <nom>Oliver Twist</nom> <klr>[&#x2026;]</klr> pro sia parte drasta priskribo de infana laboro,
        krimoj kaj <tld/>o en la epoko de la frua industriigo en Anglio vekis grandan
        atenton
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=270935">Oliver Twist</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        la <tld/>o en la 19a jc estis ka&ubreve;zata de kombino de diversaj faktoroj, kiel plimulti&gcirc;anta
        popolo,
        konkurenco inter ekindustrii&gcirc;o kaj tradiciaj metioj inkluzive de ribeloj, misrikoltoj de
        terpomoj
        kaj greno kaj tutekonomia recesio.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_w;&c_p;&c_e;&c_r;&c_y;&c_z;&c_m;</trd>
  <trdgrp lng="de">
    <trd>Pauperismus</trd>,
    <trd>Massenelend</trd>,
    <trd>Massenarmut</trd>
  </trdgrp>
  <trdgrp lng="en"><trd>pauperism</trd>, <trd>beggary</trd></trdgrp>
  <trd lng="fr">paup&eacute;risme</trd>
  <trd lng="hu">t&ouml;megnyomor</trd>
  <trd lng="nl">pauperisme</trd>
  <trd lng="pl">pauperyzm</trd>
  <trdgrp lng="pt">
    <trd>pauperismo</trd>,
    <trd>mis&eacute;ria</trd>,
    <trd>paup&eacute;rie</trd>    
  </trdgrp>
  <trd lng="ro">pauperism</trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_a;&c_u;&c_p;&c_je;&c_r;&c_i;&c_z;&c_m;</trd>,
    <trd>&c_o;&c_b;&c_n;&c_i;&c_shch;&c_a;&c_n;&c_i;&c_je; &c_m;&c_a;&c_s;&c_s;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x43F;&#x430;&#x443;&#x43F;&#x435;&#x440;&#x438;&#x437;&#x43C;</trd>,
    <trd>&#x437;&#x443;&#x431;&#x43E;&#x436;&#x456;&#x43D;&#x43D;&#x44F;</trd>
  </trdgrp>
</drv>
