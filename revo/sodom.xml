<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: sodom.xml,v 1.6 2023/09/04 05:14:55 afido Exp $">
    <kap>
      <rad>Sodom</rad>/o <fnt><bib>MT</bib></fnt>
    </kap>

<drv mrk="sodom.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Pratempa <ref tip="lst" lst="voko:urboj" cel="urb.0o">urbo</ref>
      &ccirc;e Morta Maro, kiu la&ubreve; la Biblio estis detruita de Dio 
      pro malvirteco de &gcirc;iaj enlo&gcirc;antoj:
      <ekz>
        la Eternulo pluvigis sur <tld/>on kaj <esc>Gomoran</esc> sulfuron kaj fajron de la Eternulo
        el la &ccirc;ielo
        <fnt>
          <bib>MT</bib>
          <lok>Genezo 19:24</lok>
        </fnt>;
      </ekz>
      <ekz>
        jen ku&scirc;as la urbo kiel Gomoro kaj <tld/>o, la tuta horizonto konsistis el fajro,
        sulfuro kaj fumo
        <fnt>
          <bib>Rabistoj</bib>
          <lok>Akto Dua</lok>
        </fnt>;
      </ekz>
      <ekz>
        tiuj e&ccirc; plifortigis la miaopinie obsedan timon pri samseksemo: en la biblio ja
        estas la fama rakonto pri <tld/>o (Genezo 18-19)
        <fnt>
          <bib>Monato</bib>
          <aut>Gerrit Berveling</aut>
          <vrk><url ref="&Monato;/2010/010110.php">Geja paro en Malavio</url></vrk>
          <lok>2010</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="vid" cel="gomor.0o">Gomoro</ref>
    <trd lng="be">&c_S;&c_a;&c_d;&c_o;&c_m;</trd>
    <trd lng="de">Sodom</trd>
    <trd lng="en">Sodom</trd>
    <trd lng="fr">Sodome</trd>
    <trd lng="he">&samekh;&dalet;&vav;&fmem;</trd>
  </snc>
  <trd lng="ja">&#x30BD;&#x30C9;&#x30E0;</trd>
  <trdgrp lng="uk">
    <trd>&#x421;&#x43E;&#x434;&#x43E;&#x43C;</trd>,
    <trd>&#x421;&#x43E;&#x434;&#x43E;&#x43C;&#x430;</trd>
  </trdgrp>
</drv>

  </art>

