<art mrk="$Id: bol.xml,v 1.42 2022/06/22 09:30:42 revo Exp $">
  <kap><ofc>*</ofc>
  <rad>bol</rad>/i</kap>

  <drv mrk="bol.0i">
    <kap><ofc>*</ofc><tld/>i</kap>
    <gra><vspec>ntr</vspec></gra>
    
    <snc mrk="bol.0i.vaporigxi">
      <dif>
        <klr>(Pri flua&jcirc;o)</klr> Esti en stato de gasi&gcirc;o,
        svarma formi&gcirc;o de vaporaj veziketoj, krevantaj &ccirc;e
        la supra&jcirc;o:
        <ekz>
          &ccirc;e la normalaj kondi&ccirc;oj la pura akvo <tld/>as je
          la
          temperaturo 100 gradoj Celsiaj.
        </ekz>
      </dif>
      <refgrp tip="vid">
        <ref cel="sxauxm.0i">&scirc;a&ubreve;mi</ref>,
        <ref cel="ard.0i">ardi</ref>.
      </refgrp>
      <trdgrp lng="fr">
        <trd>bouillir<klr tip="amb"> (intr.)</klr></trd>,
        <trd>bouillonner</trd>
      </trdgrp>
      <trdgrp lng="pl">
        <trd>wrze&cacute;</trd>,
        <trd>gotowa&cacute; si&eogonek;</trd>
      </trdgrp>
      <trd lng="pt">ferver</trd>
    </snc>
    
    <snc mrk="bol.0i.maro">
      <uzo tip="stl">FIG</uzo>
      <dif>
        Esti en stato de forta malkvieto kaj eksciti&gcirc;o:
        <ekz>
          la maro <tld/>as<fnt>B</fnt>;
        </ekz>
        <ekz>
          <tld/>i de kolero
          <fnt><bib>Far1</bib>, <lok>&ccirc;ap. 22</lok></fnt>;
        </ekz>
        <ekz>
          <tld/>i senpacienco;
        </ekz>
        <ekz>
          <tld/>i pro &gcirc;ojo;
        </ekz>
        <ekz>
          la popolo, preta ribeli, <tld/>as<fnt>B</fnt>;
        </ekz>
        <ekz>
          <tld/>is terura tumulto
          <fnt><bib>Far2</bib>, <lok>&ccirc;ap. 18</lok></fnt>;
        </ekz>
        <ekz>
          lia sango <tld/>is de pasio<fnt>B</fnt>;
        </ekz>
        <ekz>
          <tld/>antaj paroloj;
        </ekz>
        <ekz>
          <tld/>as kolero en lia koro;
        </ekz>
        <ekz>
          la batalo <tld/>is en la animo de l' princo
          <fnt><bib>Far2</bib>, <lok>&ccirc;ap. 3</lok></fnt>.
        </ekz>
      </dif>
      <refgrp tip="vid">
        <ref cel="ard.0i">ardi</ref>,
        <ref cel="fulm.0i">fulmi</ref>,
        <ref cel="eksplo.0i">eksplodi</ref>.
      </refgrp>
      <trdgrp lng="fr">
        <trd>bouillir<klr tip="ind"> (piaffer)</klr></trd>,
        <trd>piaffer</trd>
      </trdgrp>
      <trdgrp lng="pl">
        <trd>wrze&cacute;</trd>,
        <trd>kipie&cacute;</trd>
      </trdgrp>
    </snc>
    
    <snc mrk="bol.0i.fervori">
      <uzo tip="stl">FIG</uzo>
      <dif>
        Esti tre vigla, fervori:
        <ekz>
          la laboro <tld/>is e&ccirc; dum la
          nokto<fnt>B</fnt>;
        </ekz>
        <ekz>
          esti plena je <tld/>anta energio;
        </ekz>
        <ekz>
          trabori la bruston plenan de <tld/>anta vivo<fnt>Z</fnt>.
        </ekz>
      </dif>
      <trd lng="fr">bouillonner<klr tip="ind"> (fig.)</klr></trd>
      <trdgrp lng="pl">
        <trd>wrze&cacute;</trd>,
        <trd>kipie&cacute;</trd>,
        <trd>tryska&cacute;<klr> energi&aogonek;</klr></trd>
      </trdgrp>
    </snc>
  <trd lng="be">&c_k;&c_ib;&c_p;&c_je;&c_c;&c_mol;</trd>
  <trdgrp lng="bg">
      <trd>&c_v;&c_r;&c_ja;</trd>,
      <trd>&c_k;&c_i;&c_p;&c_ja;</trd>
  </trdgrp>
  <trd lng="bo">&#xF60;&#xF41;&#xF7C;&#xF63;&#xF0B;</trd>
  <trd lng="br">birvi&ntilde;<klr tip="ind"> (v.g.)</klr></trd>
  <trdgrp lng="cs">
      <trd>v&rcaron;&iacute;t</trd>,
      <trd>va&rcaron;it se</trd>
  </trdgrp>      
  <trdgrp lng="de">
      <trd>sieden</trd>,
      <trd>kochen</trd>
  </trdgrp>
  <trd lng="en">boil</trd>
  <trd lng="es">hervir</trd>
  <trd lng="he">&#x5DC;&#x5E8;&#x5EA;&#x5D5;&#x5D7;</trd>
  <trd lng="hu">forr</trd>
  <trdgrp lng="nl">
      <trd>koken</trd>,
      <trd>zieden</trd>
  </trdgrp>
  <trd lng="ru">&c_k;&c_i;&c_p;&c_je;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
      <trd>vari&tcaron; sa</trd>,
      <trd>vrie&tcaron;</trd>
  </trdgrp>
  <trd lng="sv">koka</trd>
  <trdgrp lng="uk">
    <trd>&#x43A;&c_i;&#x43F;&c_ib;&c_t;&c_i;</trd>
  </trdgrp>
</drv>

<drv mrk="bol.0o">
    <kap><tld/>o</kap>
    <snc mrk="bol.0o.komune">
      <dif>
        Ago <tld/>i:
        <ekz>
          Kiam vi kuiras rizon, vi re&scirc;argas akumulatoron post 7
          a&ubreve; 8
          minutoj de la <tld/>o.
          <fnt><vrk><url ref="&CRI;1/2004/06/18/1@11014.htm">
              Elektro&scirc;paraj lertecoj</url></vrk>,</fnt>.</ekz>
      </dif>
      <trd lng="be">&c_k;&c_ib;&c_p;&c_je;&c_n;&c_mol;&c_n;&c_je;</trd>
      <trdgrp lng="en">
        <trd>boil</trd>,
        <trd>boiling</trd>
      </trdgrp>
      <trd lng="pl">wrzenie</trd>
    </snc>
    <snc mrk="bol.0o.rezulto">
      <dif>
        Rezulto de <tld/>ado.
      </dif>
      <trd lng="be">&c_k;&c_ib;&c_p;&c_je;&c_n;&c_mol;</trd>
      <trd lng="pl">wrz&aogonek;tek</trd>
    </snc>
  <trdgrp lng="bg">
      <trd>&c_v;&c_a;&c_r;&c_je;&c_n;&c_je;</trd>,
      <trd>&c_k;&c_i;&c_p;&c_je;&c_n;&c_je;</trd>
    </trdgrp>
    <trdgrp lng="cs">
    <trd>var</trd>,
    <trd>v&rcaron;en&iacute;</trd>
  </trdgrp>
  <trd lng="fr">&eacute;bullition</trd>
  <trdgrp lng="sk">
    <trd>var</trd>,
    <trd>vrenie</trd>
  </trdgrp>
</drv>

  <drv mrk="bol.0igi">
    <kap><tld/>igi</kap>
    <snc mrk="bol.0igi.ek">
      <dif>
        Varmigi flua&jcirc;on &gcirc;is <tld/>i&gcirc;o (ek<tld/>igi).
      </dif>
      <trdgrp lng="en">
        <trd>to boil</trd>,
        <trd>bring to boil</trd>
      </trdgrp>
      <trd lng="nl">(doen) <ind>koken</ind></trd>
      <trd lng="ru">&c_v;&c_s;&c_k;&c_i;&c_p;&c_ja;&c_t;&c_i;&c_t;&c_mol;</trd>
    </snc>
    <snc mrk="bol.0igi.teni">
      <dif>
        Teni flua&jcirc;on bolanta.
      </dif>
      <trdgrp lng="en">
        <trd>to boil</trd>,
        <trd>simmer <klr>(boletigi)</klr></trd>
      </trdgrp>
      <trd lng="nl">aan de <ind>kook</ind> houden</trd>
      <trd lng="ru">&c_k;&c_i;&c_p;&c_ja;&c_t;&c_i;&c_t;&c_mol;</trd>
    </snc>
    <refgrp tip="vid">
      <ref cel="kuir.bol0i"><tld/>kuiri</ref>,
      <ref cel="frit.0i">friti</ref>
    </refgrp>
    <trd lng="be">&c_k;&c_ib;&c_p;&c_ja;&c_c;&c_ib;&c_c;&c_mol;</trd>
    <trdgrp lng="bg">
      <trd>&c_v;&c_a;&c_r;&c_ja;</trd>,
      <trd>&c_k;&c_i;&c_p;&c_v;&c_a;&c_m;</trd>
    </trdgrp>
    <trd lng="br">birvi&ntilde;<klr tip="ind"> (v.k.)</klr></trd>
    <trdgrp lng="de">
      <trd>aufkochen</trd>,
      <trd>zum sieden bringen</trd>
    </trdgrp>
    <trd lng="es">hervir</trd>
    <trdgrp lng="fr">
      <trd>faire <ind>bouillir</ind></trd>,
      <trd>bouillir<klr tip="amb"> (tr.)</klr></trd>
    </trdgrp>
    <trd lng="he">&#x5DC;&#x5D4;&#x5E8;&#x5EA;&#x5D9;&#x5D7;</trd>
  <trd lng="hu">forral</trd>
    <trdgrp lng="pl">
      <trd>gotowa&cacute;</trd>,
      <trd>doprowadza&cacute; do <ind>wrzenia</ind></trd>
    </trdgrp>
    <trd lng="ro">fierbe</trd>
    <trd lng="sv">koka <klr>(n&aring;got)</klr></trd>
    <trd lng="sk">da&tcaron; necha&tcaron; zovrie&tcaron;
    <klr>(tekutinu)</klr></trd>
  <trd lng="cs">p&rcaron;iv&eacute;st do varu</trd>
  <trdgrp lng="uk">
    <trd>&#x43A;&c_i;&#x43F;&#8217;&#x44F;&c_t;&c_i;&c_t;&c_i;</trd>,
    <trd>(&#x43F;&c_r;&#x43E; &#x43C;&#x43E;&#x43B;&#x43E;&#x43A;&#x43E; &c_shch;&c_je;)&#xA0;&#x43F;&c_a;&c_r;&c_i;&c_t;&c_i;</trd>
  </trdgrp>
</drv>

  <drv mrk="bol.0ilo">
    <kap><tld/>ilo <fnt><bib>PIV1</bib></fnt></kap>
    <uzo tip="stl">EVI</uzo>
    <snc>
      <dif>
        = <ref tip="dif" cel="bol.0krucxo"><tld/>kru&ccirc;o</ref>.
      </dif>
    </snc>
    <rim>
      La formo &leftquot;<tld/>ilo&rightquot; estas evitinda pro pluraj
      ka&ubreve;zoj.
      Unue, &ccirc;ar &gcirc;i estas misgramatika: temas pri ilo por
      <tld/>igi,
      ne pri ilo por <tld/>i. Kaj normale oni ne bolkuiras en
      &leftquot;<tld/>ilo&rightquot;, sed mal&scirc;altas &gcirc;in tuj
      post ekbolo.
      Due, la formo &leftquot;<tld/>kru&ccirc;o&rightquot; estas multe
      pli klara, dum la
      formoj similaj al &leftquot;<tld/>(ig)ilo&rightquot; havas pli
      abstraktan sencon
      en diversaj lingvoj (ekz-e angla, germana, rusa), kaj tiu pli
      abstrakta senco kongruas anka&ubreve; kun la esperanta vortfarado
      (tial la formo &leftquot;<tld/>igilo&rightquot; ricevas tian
      &gcirc;eneralan sencon en
      diversaj verkoj, ekz-e &ccirc;e Bokarev kaj Eichholz). E&ccirc;
      pli ol
      tio, anka&ubreve; en la franca simila formo, sed kun virgenra
      sufiksvarianto (bouilleur) havas la pli &gcirc;eneralan sencon
      &leftquot;<tld/>igilo&rightquot;!
      <aut>Sergio Pokrovskij</aut>
    </rim>
    <trd lng="he">&#x5E7;&#x5D5;&#x5DE;&#x5E7;&#x5D5;&#x5DD;</trd>
</drv>

  <drv mrk="bol.0igilo">
    <kap><tld/>igilo</kap>
    <snc>
      <dif>
        &Ccirc;ia ilo por <tld/>igi:
        <refgrp tip="sub">
        <ref cel="bol.0krucxo"><tld/>kru&ccirc;o</ref>,
        <ref cel="kaldro.0o.boligilo"><tld/>kaldrono</ref>,
        <ref cel="samova.0o">samovaro</ref>
        </refgrp>:
        <ekz>
          mergo<tld/>ilo <fnt><bib>EBV</bib></fnt>.
        </ekz>
      </dif>
      <bld lok="../bld/mergoboligilo.jpg">
        <ind>Mergo<tld/>igilo</ind>
        <trd lng="nl">dompelaar</trd>
        <trd lng="pl">grza&lstroke;ka<klr>elektryczna</klr></trd>
      </bld>
      <trd lng="bg">&c_b;&c_o;&c_j;&c_l;&c_je;&c_r;</trd>
      <trdgrp lng="de">
        <trd>Kocher</trd>,
        <trd>Wasserkocher</trd>,
        <trd>Sieder</trd>
      </trdgrp>
      <trd lng="en">boiler</trd>
      <trd lng="fr">bouilleur</trd>
      <trdgrp lng="nl">
        <trd>koker</trd>,
        <trd>waterkoker</trd>
      </trdgrp>
      <trdgrp lng="pl">
        <trd>bojler</trd>,
        <trd>kocher</trd>,
        <trd>grza&lstroke;ka</trd>,
        <trd>wyparka</trd>
      </trdgrp>
      <trd lng="ru">&c_k;&c_i;&c_p;&c_ja;&c_t;&c_i;&c_l;&c_mol;&c_n;&c_i;&c_k;</trd>
    </snc>
    <trdgrp lng="be">
      <trd>&c_k;&c_ib;&c_p;&c_ja;&c_c;&c_ib;&c_l;&c_mol;&c_n;&c_ib;&c_k;</trd>,
      <trd>&c_b;&c_o;&c_j;&c_l;&c_je;&c_r;</trd>,
      <trd>&c_ch;&c_a;&c_j;&c_n;&c_ib;&c_k;</trd>,
      <trd>&c_s;&c_a;&c_m;&c_a;&c_v;&c_a;&c_r;</trd>
    </trdgrp>
  <trdgrp lng="bg">
      <trd>&c_s;&c_a;&c_m;&c_o;&c_v;&c_a;&c_r;</trd>,
      <trd>&c_b;&c_malmol;&c_r;&c_z;&c_o;&c_v;&c_a;&c_r;</trd>,
      <trd>&c_ch;&c_a;&c_j;&c_n;&c_i;&c_k;</trd>
    </trdgrp>
    <trdgrp lng="cs">
    <trd>varn&aacute; n&aacute;doba boiler</trd>,
    <trd>varn&yacute; kotel</trd>,
    <trd>varn&yacute; kotl&iacute;k</trd>,
    <trd>va&rcaron;&aacute;k</trd>,
    <trd>vyva&rcaron;ov&aacute;k</trd>
  </trdgrp>
  <trd lng="he">&#x5E7;&#x5D5;&#x5DE;&#x5E7;&#x5D5;&#x5DD;</trd>
  <trd lng="sk">varn&aacute; n&aacute;doba</trd>
  <trd lng="uk">&#x43A;&c_i;&#x43F;&#8217;&#x44F;&c_t;&c_i;&#x43B;&#x44C;&#x43D;&c_i;&#x43A;</trd>
</drv>

  <drv mrk="bol.0krucxo">
  <kap><tld/>kru&ccirc;o</kap>
  <snc>
    <dif>
        Vazo por <tld/>igi akvon, kutime kun tenilo, kovrilo kaj
        ver&scirc;ilo:
      <ekz>
        elektra <tld/>kru&ccirc;o kun a&ubreve;tomata mal&scirc;altilo;
      </ekz>
      <ekz>
        gasfornela <tld/>kru&ccirc;o kun fajfilo.
      </ekz>
    </dif>
    <bld lok="../bld/tradicia_bolkrucxo.jpg">
      Tradicia <tld/>kru&ccirc;o
    </bld>
    <bld lok="../bld/elektra_bolkrucxo.jpg">
      Elektra <tld/>kru&ccirc;o
    </bld>
    <trdgrp lng="de">
      <trd>Kessel</trd>,
      <trd>Wasserkessel</trd>,
      <trd>Kanne</trd>,
      <trd>Wasserkanne</trd>
    </trdgrp>
    <trdgrp lng="br">
      <trd>pod-berver</trd>,
      <trd>kitell</trd>
    </trdgrp>
    <trd lng="en">kettle</trd>
    <trd lng="fr">bouilloire</trd>
    <trdgrp lng="nl">
      <trd>waterketel</trd>,
      <trd>waterkoker</trd>
    </trdgrp>
    <trd lng="pl">czajnik</trd>
    <trd lng="ru">&c_ch;&c_a;&c_j;&c_n;&c_i;&c_k;</trd>
  </snc>
  <trd lng="be">&c_ch;&c_a;&c_j;&c_n;&c_ib;&c_k;</trd>
  <trd lng="bg">&c_ch;&c_a;&c_j;&c_n;&c_i;&c_k;</trd>
    <trd lng="bo">&#xF41;&#xF7C;&#xF42;&#xF0B;&#xF63;&#xF9F;&#xF72;&#xF62;&#xF0B;</trd>
  <trd lng="he">&#x5E7;&#x5D5;&#x5BC;&#x5DE;&#x5E7;&#x5D5;&#x5BC;&#x5DD;</trd>
</drv>
