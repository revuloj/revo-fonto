<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
   <ofc>*</ofc>
   <rad>perl</rad>/o
</kap>
<drv mrk="perl.0o">
   <kap><ofc>*</ofc><tld/>o</kap>
   <snc>
     <dif>
       Brilblanka globeto formi&gcirc;anta en kelkaj specoj de markonkoj kaj
       uzata kiel juvelo:
       <ekz>
         la virino estis ornamita per oro kaj altvaloraj &scirc;tonoj kaj
         <tld/>oj.
       </ekz>
     </dif>
     <trdgrp lng="ru">
       <trd>&c_zh;&c_je;&c_m;&c_ch;&c_u;&c_g;</trd>,
       <trd>&c_zh;&c_je;&c_m;&c_ch;&c_u;&c_zh;&c_i;&c_n;&c_a;</trd>,
       <trd>&c_p;&c_je;&c_r;&c_l;</trd>
     </trdgrp>
   </snc>
   <snc>
     <dif>
       Vitra, emajla a&ubreve; metala globeto, kiun oni traboras kaj surfadenigas
       por fari diversajn ornama&jcirc;ojn.
     </dif>
     <trd lng="ru">&c_b;&c_i;&c_s;&c_je;&c_r;</trd>
   </snc>
   <snc>
     <uzo tip="stl">FIG</uzo>
     <dif>
       Altvalora&jcirc;o, perfekta&jcirc;o, plej bela a&jcirc;o:
       <ekz>
         tio estas la <tld/>o el la kolekto;
       </ekz>
       <ekz>
         li estas la <tld/>o el la edzoj;
       </ekz>
       <ekz>
         literatura <tld/>o;
       </ekz>
       <ekz>
         ne donu sankta&jcirc;on al la hundoj, nek &jcirc;etu viajn <tld/>ojn anta&ubreve; la
         porkoj.
       </ekz>
     </dif>
     <refgrp tip="sin">
       <ref cel="gem.0o">gemo</ref>,
       <ref cel="trezor.0o">trezoro</ref>.
     </refgrp>
     <trd lng="ru">&c_p;&c_je;&c_r;&c_l;</trd>
   </snc>                       
   <trd lng="br">perlezenn</trd>
   <trd lng="de">Perle</trd>
   <trd lng="fr">perle</trd>
   <trdgrp lng="hu">
     <trd>gy&ouml;ngy</trd>,
     <trd>gy&ouml;ngyszem</trd>
   </trdgrp>
   <trdgrp lng="nl">
     <trd>parel</trd>,
     <trd>kraal</trd>
   </trdgrp>
</drv>

<drv mrk="perl.0a">
   <kap><tld/>a</kap>
   <snc>
     <dif>
       Simila al <tld/>o, <tld/>okolora:
       <ekz>
         <tld/>aj dentoj;
       </ekz>
       <ekz>
         <tld/>a &ccirc;ielo, roso<fnt>B</fnt>.
       </ekz>
     </dif>
   </snc>                    
   <trd lng="br">-<ind>perlez</ind></trd>
   <trd lng="de">Perlmutt-</trd>
   <trdgrp lng="hu">
     <trd>gy&ouml;ngy-</trd>,
     <trd>gy&ouml;ngyszer&udblac;</trd>
   </trdgrp>
   <trdgrp lng="fr">
     <trd>de <ind>perle</ind></trd>,
     <trd>perl&eacute;</trd>
   </trdgrp>
   <trd lng="nl">parelachtig</trd>
   <trd lng="ru">&c_zh;&c_je;&c_m;&c_ch;&c_u;&c_zh;&c_n;&c_y;&c_j;</trd>
</drv>

<drv mrk="perl.0i">
   <kap><tld/>i</kap>
   <gra><vspec>ntr</vspec></gra>
   <snc>
     <dif>
       Eli&gcirc;i kun formo de <tld/>o:
       <ekz>
         la &scirc;vito <tld/>is sur lia frunto;
       </ekz>
       <ekz>
         el liaj okuloj <tld/>as malrapide larmoj.
       </ekz>
     </dif>
   </snc>           
   <trdgrp lng="br">
     <trd>perlezenni&ntilde;<klr tip="ind"> (pizenna&ntilde;)</klr></trd>,
     <trd>pizenna&ntilde;</trd>
   </trdgrp>
   <trd lng="de">perlen</trd>
   <trd lng="fr">perler</trd>
   <trd lng="nl">parelen</trd>
</drv>
</art>
