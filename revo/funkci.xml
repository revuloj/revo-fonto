<drv mrk="funkci.elementa0o">
  <kap>elementa <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      &Ccirc;iu reela <ref tip="super" cel="funkci.0o.MAT"><tld/>o</ref>
      kun reela argumento, prenita en la sekva vico:
      <refgrp tip="sub">
        <ref cel="potenc.0o.per_entjero">potencoj</ref>,
        <ref cel="ekspon1.0o">eksponencialoj</ref>,
        <ref cel="funkci.trigonometria0o">trigonometriaj <tld/>oj</ref>,
      </refgrp>
      a&ubreve; rezultanta el apliko de aritmetikaj operacioj, multipliko
      per konstanto, malvastigo, kunligo a&ubreve; inversigo al tiuj
      funkcioj:
      <ekz>
        polinomaj <tld/>oj, logaritmoj, hiperbolaj <tld/>oj estas
        elementaj <tld/>oj.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">elementare <ind>Funktion</ind></trd>
  <trd lng="en">elementary <ind>function</ind></trd>
  <trd lng="fr">fonction &eacute;l&eacute;mentaire</trd>
  <trd lng="pl">funkcja elementarna</trd>
  <trd lng="ru">&c_e;&c_l;&c_je;&c_m;&c_je;&c_n;&c_t;&c_a;&c_r;&c_n;&c_a;&c_ja; <ind>&c_f;&c_u;&c_n;&c_k;&c_c;&c_i;&c_ja;</ind></trd>
  <adm>Fonto trovenda.<aut>MB</aut></adm>
</drv>

