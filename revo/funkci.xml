      <trd>fonctionnaire</trd>
    </trdgrp>
    <trd lng="nl">functionaris</trd>
    <trdgrp lng="ru">
      <trd>&c_o;&c_t;&c_v;&c_je;&c_t;&c_s;&c_t;&c_v;&c_je;&c_n;&c_n;&c_y;&c_j;
      <ind>&c_r;&c_a;&c_b;&c_o;&c_t;&c_n;&c_i;&c_k;</ind></trd>,
      <trd>&c_f;&c_u;&c_n;&c_k;&c_c;&c_i;&c_o;&c_n;&c_je;&c_r;</trd>
    </trdgrp>
  </snc>
</drv>

