<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>vual</rad>/o
</kap>
<drv mrk="vual.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <dif>
      Peco de &scirc;tofo, tuko, uzata por ka&scirc;i, kovri ion, precipe la viza&gcirc;on
      de virinoj:
      <ekz>
        la <tld/>oj de mona&hcirc;inoj;
      </ekz>
      <ekz>
        sen<tld/>igi sin.
      </ekz>
    </dif>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      &Ccirc;io, kio ka&scirc;as la veron a&ubreve; la realon:
      <ekz>
        <tld/>o falis de liaj okuloj;
      </ekz>
      <ekz>
        espereble tiu katastrofo for&scirc;iros la <tld/>ojn de la homa kredemeco
        <klr>(forigos la iluziojn kaj montros la reala&jcirc;on,
        <ref tip="vid" cel="okul.0o">okulo</ref>)</klr>;
      </ekz>
      <ekz>
        la tempo fine &jcirc;etos <tld/>on <klr>(forgesigos)</klr> sur
        tiujn mal&gcirc;ojigajn rememorojn;
      </ekz>
      <ekz>
        mi sen<tld/>e <klr>(tute malka&scirc;e)</klr> diros al vi, ke.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_v;&c_u;&c_a;&c_l;&c_mol;</trd>,
    <trd>&c_v;&c_e;&c_l;&c_ju;&c_m;</trd>
  </trdgrp>
  <trd lng="en">veil</trd>
  <trd lng="es">velo</trd>
  <trdgrp lng="fr">
    <trd>voile</trd>
  </trdgrp>
  <trd lng="hu">f&aacute;tyol</trd>  
  <trd lng="nl">sluier</trd>
  <trd lng="de">Schleier</trd>
  <trd lng="pt">v&eacute;u</trd>
  <trd lng="ru">&c_v;&c_u;&c_a;&c_l;&c_mol;</trd>
</drv>

<drv mrk="vual.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Kovri per <tld/>o.
    </dif>
    <trd lng="hu">lef&aacute;tyoloz</trd>    
  </snc>
  <snc>
    <dif>
      Ka&scirc;i ion al la rigardoj:
      <ekz>
        densaj nuboj <tld/>is la lunon;
      </ekz>
      <ekz>
        la valo estis <tld/>ita de nebulo<fnt>B</fnt>;
      </ekz>
      <ekz>
        kiam nokto <tld/>as, &ccirc;iuj koloroj egalas
        <fnt><bib>PrV</bib></fnt>
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="kasx.0i">ka&scirc;i</ref>,
      <ref cel="volv..en0i0ekovri">envolvi</ref>.
    </refgrp>
    
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Kovri, konfuzante a&ubreve; malhelpante la rigardon:
      <ekz>
        la larmoj <tld/>is liajn okulojn<fnt>B</fnt>,
      </ekz>
      <ekz>
        lian rigardon;
      </ekz>
      <ekz>
        okuloj <tld/>itaj per mal&gcirc;ojo;
      </ekz>
      <ekz>
        ne&gcirc;pluvo <tld/>is la vitrojn;
      </ekz>
      <ekz>
        la partieco <tld/>as vian prudenton<fnt>B</fnt>;
      </ekz>
      <ekz>
        frunto <tld/>ita <ind>(maltrankviligita)</ind>
        per medito<fnt>B</fnt>.
      </ekz>
    </dif>
    <trd lng="hu">elkend&odblac;z</trd>    
  </snc>
  <trdgrp lng="be">
    <trd>&c_z;&c_a;&c_v;&c_u;&c_a;&c_l;&c_ja;&c_v;&c_a;&c_c;&c_mol;</trd>, 
    <trd>&c_p;&c_a;&c_k;&c_r;&c_y;&c_c;&c_mol; 
      &c_v;&c_u;&c_a;&c_l;&c_mol;&c_l;&c_ju;</trd>
  </trdgrp>  
  <trdgrp lng="es">
    <trd>velar</trd>,
    <trd>ocultar</trd>
  </trdgrp>
  <trd lng="en">veil</trd>
  <trdgrp lng="fr">
    <trd>voiler</trd>
  </trdgrp>
  <trd lng="de">verschleiern</trd>
  <trdgrp lng="nl">
    <trd>sluieren</trd>,
    <trd>omsluieren</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_p;&c_o;&c_k;&c_r;&c_y;&c_t;&c_mol; <ind>&c_v;&c_u;&c_a;&c_l;&c_mol;&c_ju;</ind></trd>,
    <trd>&c_z;&c_a;&c_v;&c_u;&c_a;&c_l;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="vual.sen0igi">
  <kap>sen<tld/>igi</kap>
  <snc>
    <dif>
      Forigi la <tld/>on de iu a&ubreve; io.
    </dif>
  </snc>
  <trd lng="be">&c_z;&c_mol;&c_n;&c_ja;&c_c;&c_mol; 
    <ind>&c_v;&c_u;&c_a;&c_l;&c_mol;</ind></trd>
  <trdgrp lng="fr">
    <trd>d&eacute;voiler</trd>
  </trdgrp>
  <trdgrp lng="en">
     <trd>unveil</trd>,
     <trd>reveal</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>fellebbenti a <ind>f&aacute;tylat</ind></trd>,
    <trd>leleplez</trd>
  </trdgrp>
  <trd lng="nl">ontsluieren</trd>
</drv>
</art>
