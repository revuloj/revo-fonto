<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: ironi.xml,v 1.22 2023/08/31 16:40:58 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>ironi</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="ironi.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Moka dirmaniero, la&ubreve; kiu oni esprimas ian penson tute
      kontra&ubreve;an al tio, kion oni intencas komprenigi:
      <ekz>
        liaj komplimentoj estas nur <tld/>oj;
      </ekz>
      <ekz>
        Swift kaj Voltaire estas majstroj pri <tld/>o;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <ind><tld/>o de la sorto</ind>
        <klr>(okazo strange kontrasta kun la atendita&jcirc;oj)</klr>.
        <trd lng="fr">ironie du sort</trd>
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_ib;&c_r;&c_o;&c_n;&c_ib;&c_ja;</trd>
  <trd lng="cs">ironie</trd>
  <trd lng="de">Ironie</trd>
  <trd lng="en">irony</trd>
  <trd lng="es">iron&iacute;a</trd>
  <trd lng="fr">ironie</trd>
  <trd lng="hu">ir&oacute;nia</trd>
  <trdgrp lng="ja">
    <trd>&#x76AE;&#x8089;  [<ind>&#x3072;&#x306B;&#x304F;</ind>]</trd>,
    <trd>&#x5F53;&#x3066;&#x3053;&#x3059;&#x308A;  [<ind>&#x3042;&#x3066;&#x3053;&#x3059;&#x308A;</ind>]</trd>,
    <trd>&#x30A2;&#x30A4;&#x30ED;&#x30CB;&#x30FC;</trd>,
    <trd>&#x53CD;&#x8A9E;  [<ind>&#x306F;&#x3093;&#x3054;</ind>]</trd>
  </trdgrp>
  <trd lng="nl">ironie</trd>
  <trd lng="pl">ironia</trd>
  <trd lng="pt">ironia</trd>
  <trd lng="ru">&c_i;&c_r;&c_o;&c_n;&c_i;&c_ja;</trd>
  <trd lng="sk">ir&oacute;nia</trd>
  <trd lng="uk">&#x456;&#x440;&#x43E;&#x43D;&#x456;&#x44F;</trd>
</drv>

<drv mrk="ironi.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Karakterizata per <tld/>o:
      <ekz>
        <tld/>aj la&ubreve;doj;
      </ekz>
      <ekz>
        kun <tld/>a kaj malestima rideto
        <fnt><bib>EE</bib>, <lok>&ccirc;ap. 1</lok></fnt>;
      </ekz>
      <ekz>
        <tld/>a gesto, frazo;
      </ekz>
      <ekz>
        <tld/>e paroli.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_ib;&c_r;&c_a;&c_n;&c_ib;&c_ch;&c_n;&c_y;</trd>
  <trd lng="cs">ironick&yacute;</trd>
  <trd lng="de">ironisch</trd>
  <trdgrp lng="en">
    <trd>ironic</trd>,
    <trd>ironical</trd>
  </trdgrp>
  <trd lng="es">ir&oacute;nico</trd>
  <trd lng="fr">ironique</trd>
  <trd lng="hu">ironikus</trd>
  <trd lng="ja">&#x76AE;&#x8089;&#x306A;  [<ind>&#x3072;&#x306B;&#x304F;&#x306A;</ind>]</trd>
  <trd lng="nl">ironisch</trd>
  <trd lng="pl">ironiczny</trd>
  <trd lng="pt">ir&ocirc;nico</trd>
  <trdgrp lng="ru">
    <trd>&c_i;&c_r;&c_o;&c_n;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>,
    <trd>&c_i;&c_r;&c_o;&c_n;&c_i;&c_ch;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>ironick&yacute;</trd>,
    <trd>posme&scaron;n&yacute;</trd>
  </trdgrp>
  <trd lng="uk">&#x456;&#x440;&#x43E;&#x43D;&#x456;&#x447;&#x43D;&#x438;&#x439;</trd>
</drv>

<drv mrk="ironi.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Paroli <tld/>e:
      <ekz>
        &ccirc;u vi seriozas a&ubreve; <tld/>as?
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="mok.0i">moki</ref>,
      <ref cel="sxerc.0i">&scirc;erci</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_ib;&c_r;&c_a;&c_n;&c_ib;&c_z;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trdgrp lng="cs">
    <trd>posm&iacute;vat se</trd>,
    <trd>u&zcaron;&iacute;vat ironii</trd>
  </trdgrp>
  <trd lng="de">ironisch sprechen</trd>
  <trd lng="en">speak ironically</trd>
  <trdgrp lng="fr">
    <trd>ironiser</trd>,
    <trd>faire de l'<ind>ironie</ind></trd>
  </trdgrp>
  <trd lng="hu">ironiz&aacute;l</trd>
  <trd lng="ja">&#x76AE;&#x8089;&#x3092;&#x8A00;&#x3046;  [<ind>&#x3072;&#x306B;&#x304F;&#x3092;&#x3044;&#x3046;</ind>]</trd>
  <trd lng="nl">ironisch spreken</trd>
  <trd lng="pl">ironizowa&cacute;</trd>
  <trdgrp lng="pt">
   <trd>ironizar</trd>, 
   <trd>falar com <ind>ironia</ind></trd> 
  </trdgrp>
  <trd lng="ru">&c_i;&c_r;&c_o;&c_n;&c_i;&c_z;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trd lng="sk">posmieva&tcaron; sa</trd>
  <trd lng="uk">&#x456;&#x440;&#x43E;&#x43D;&#x456;&#x437;&#x443;&#x432;&#x430;&#x442;&#x438;</trd>
</drv>

<drv mrk="ironi.mem0o">
  <kap>mem<tld/>o</kap>
  <snc mrk="ironi.mem0o.KOMUNE">
    <dif>
      <tld lit="I"/>o, moko, &scirc;erco pri si:
      <ekz>
        amara, mem<tld/>a rideto rigidi&gcirc;is en
        liaj bu&scirc;anguloj
        <fnt><aut>J. Baghy</aut>, <vrk>Sur Sanga Tero</vrk>, 
        <lok>1933</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_a;&c_m;&c_a;&c_ib;&c_r;&c_o;&c_n;&c_ib;&c_ja;</trd>
  <trd lng="fr">autod&eacute;rision</trd>
  <trd lng="pl">autoironia</trd>
</drv>
</art>
