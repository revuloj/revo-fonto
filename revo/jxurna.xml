    <trd>&#x4ED5;&#x8A33;&#x5E33;  <pr>&#12375;&#x308F;&#12369;&#12385;&#12423;&#12358;</pr></trd>
  </trdgrp>
  <trd lng="lat">acta, orum diurna</trd>
