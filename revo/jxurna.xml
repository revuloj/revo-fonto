<drv mrk="jxurna.esplor0isto">
  <kap>esplor<tld/>isto</kap>
  <snc mrk="jxurna.esplor0isto.INF">
    <dif>
      <tld lit="&Jcirc;"/>isto, kiu mem esploras iun temon, kolektante
      atestojn, dokumentojn, kaj raportante la akiritajn informojn:
      <ekz>
        <nom>Anderson</nom> <klr>[estas]</klr> internacia esplor<tld/>isto
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=330135">Jon Lee Anderson</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        la filmon konsistigas <klr>[&#8230;]</klr> intervjuoj
        kun diversaj homoj: eksspionino kiu klarigas kiel laboris
        spionoj en tiu epoko, la esplor<tld/>isto <nom>Xavier Vinader</nom>
        pri la sociaj kaj politikaj cirkonstancoj
        <fnt>
          <aut>guillem</aut>,
          <vrk><url ref="http://www.ipernity.com/blog/niforiru/394213">
          inter oportunismo kaj idealismo</url></vrk>,
          <lok>2012-06-05</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_zh;&c_u;&c_r;&c_n;&c_a;&c_l;&c_ib;&c_s;&c_t;, &c_ja;&c_k;&c_ib; &c_z;&c_a;&c_j;&c_m;&c_a;&c_je;&c_c;&c_c;&c_a; &c_zh;&c_u;&c_r;&c_n;&c_a;&c_l;&c_ib;&c_s;&c_c;&c_k;&c_ib;&c_m;&c_ib; &c_r;&c_a;&c_s;&c_mol;&c_s;&c_mol;&c_l;&c_je;&c_d;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_ja;&c_m;&c_ib;</trd>
  <trd lng="de">Investigativjournalist</trd>
  <trd lng="fr">journaliste d'enqu&ecirc;te</trd>
  <trd lng="id"><ind>reporter</ind> investigatif</trd>
</drv>

<drv mrk="jxurna.foto0isto">
  <kap>foto<tld/>isto</kap>
  <snc mrk="jxurna.foto0isto.INF">
    <dif>
      <tld lit="&Jcirc;"/>isto, kiu raportas pri eventoj
      kaj situacioj precipe ilin fotante:
      <ekz>
        kataluna foto<tld/>isto kiu faki&gcirc;is pri fa&scirc;ismaj hispanistoj en Katalunio
        <fnt>
          <vrk><url
          ref="https://nuntempe.wordpress.com/2018/07/22/senpuneco-por-fasistoj/">senpuneco por
          fa&scirc;istoj</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        la hispana foto<tld/>isto <nom>Diego Ibarra S&aacute;nchez</nom>
        uzas &ccirc;i tiun metaforon por esprimi penson,
        kiu tre longe hantas lin &ndash; milito forvi&scirc;as la
        estontecon de tuta generacio
        <fnt>
          <aut>K. Markelova, trad. S. Carlos Praxedes</aut>
          <vrk>Forrabita Klerigado</vrk>
          <lok><url ref="&UEA;l/?prenu=Unesko_Kuriero_3_17">
          Unesko-kuriero, 2017-10 &gcirc;is 12 (3)</url></lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_f;&c_o;&c_t;&c_a;&c_zh;&c_u;&c_r;&c_n;&c_a;&c_l;&c_ib;&c_s;&c_t;</trd>,
    <trd>&c_f;&c_o;&c_t;&c_a;&c_r;&c_e;&c_p;&c_a;&c_r;&c_t;&c_e;&c_r;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Fotoreporter</trd>,
    <trd>Fotojournalist</trd>
  </trdgrp>
  <trd lng="fr">reporter-photographe</trd>
</drv>
