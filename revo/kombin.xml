<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>kombin</rad>/i
</kap>
<drv mrk="kombin.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Kunigi plurajn elementojn la&ubreve; difinita ordo, lerte
      aran&gcirc;i:
      <ekz>
        <tld/>i literojn, ciferojn, kartojn.
      </ekz>
    </dif>
  </snc>
  <snc>
    <uzo tip="fak">KEM</uzo>
    <dif>
      Unuigi molekulojn de du a&ubreve; pliaj substancoj la&ubreve;
      difinita
      proporcio por formi novan <tld/>on.
    </dif>
  </snc>
  <snc>
    <dif>
      Interaran&gcirc;i ideojn por konduki al konkludo, a&ubreve;
      rimedojn por
      estigi rezultaton:
      <ekz>
        <tld/>i planon, projekton, manovrojn, draman intrigon
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="teks.0i">teksi</ref>,
      <ref cel="sxpin.0i">&scirc;pini</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_l;&c_u;&c_ch;&c_y;&c_c;&c_mol;</trd>,
    <trd>&c_z;&c_l;&c_u;&c_ch;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_s;&c_p;&c_a;&c_l;&c_u;&c_ch;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_k;&c_a;&c_m;&c_b;&c_ib;&c_n;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="en">combine</trd>
  <trdgrp lng="nl">
    <trd>combineren</trd>,
    <trd>samenvoegen</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_s;&c_o;&c_ch;&c_je;&c_t;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_s;&c_o;&c_je;&c_d;&c_i;&c_n;&c_ja;&c_t;&c_mol;</trd>,
    <trd>&c_k;&c_o;&c_m;&c_b;&c_i;&c_n;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="kombin.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      <tld lit="K"/>ado a&ubreve; <tld/>a&jcirc;o.
    </dif>
  </snc>
</drv>

<drv mrk="kombin.0ado">
  <kap><tld/>ado</kap>
  <snc>
    <dif>
      Ago <tld/>i.
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_l;&c_u;&c_ch;&c_e;&c_n;&c_mol;&c_n;&c_je;</trd>,
    <trd>&c_k;&c_a;&c_m;&c_b;&c_ib;&c_n;&c_a;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_s;&c_o;&c_ch;&c_je;&c_t;&c_a;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_k;&c_o;&c_m;&c_b;&c_i;&c_n;&c_i;&c_r;&c_o;&c_v;&c_a;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
</drv>

<drv mrk="kombin.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc mrk="kombin.0ajxo.rezulto">
    <dif>
      Rezultato de <tld/>ado.
    </dif>
    <trdgrp lng="be">
      <trd>&c_s;&c_p;&c_a;&c_l;&c_u;&c_ch;&c_e;&c_n;&c_mol;&c_n;&c_je;</trd>,
      <trd>&c_k;&c_a;&c_m;&c_b;&c_ib;&c_n;&c_a;&c_c;&c_y;&c_ja;</trd>
    </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_s;&c_o;&c_ch;&c_je;&c_t;&c_a;&c_n;&c_i;&c_je;</trd>,
      <trd>&c_k;&c_o;&c_m;&c_b;&c_i;&c_n;&c_a;&c_c;&c_i;&c_ja;</trd>
    </trdgrp>
  </snc>
  <snc mrk="kombin.0ajxo.KEM">
    <uzo tip="fak">KEM</uzo>
    <dif>
      Homogena, nur &hcirc;emie disigebla kuna&jcirc;o
    </dif>
    <refgrp tip="vid">
      <ref cel="kompon">kompona&jcirc;o</ref>,
      <ref cel="met.kun0i">kunmeta&jcirc;o</ref>,
      <ref cel="miks.0ajxo">miksa&jcirc;o</ref>,
      <ref cel="solv">solva&jcirc;o</ref>.
    </refgrp>
    <trd lng="be">&c_z;&c_l;&c_u;&c_ch;&c_e;&c_n;&c_mol;&c_n;&c_je;</trd>
    <trd lng="en">compound</trd>
    <trd lng="nl">verbinding</trd>
    <trd
    lng="ru">&c_s;&c_o;&c_je;&c_d;&c_i;&c_n;&c_je;&c_n;&c_i;&c_je;</trd>
  </snc>
  <snc mrk="kombin.0ajxo.MAT">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>MatTerm</bib><lok>p. 14</lok></fnt>
    <dif>
      <klr>(de <frm><k>p</k></frm> el <frm><k>n</k></frm>, 
      de <frm><k>n</k></frm> po <frm><k>p</k></frm>)</klr>
      &Ccirc;iu el la diversaj manieroj formi <frm><k>p</k></frm>-elementan
      subaron de <frm><k>n</k></frm>-elementa aro:
      <ekz>
        la nombron de &ccirc;iuj <tld/>a&jcirc;oj de <frm><k>n</k></frm>
        po <frm><k>p</k></frm> oni signas per
        <frm>K<sup><k>p</k></sup><sub><k>n</k></sub> =
        A<sup><k>p</k></sup><sub><k>n</k></sub>/<k>n</k>! =
        <k>n</k>!/[<k>p</k>!&#215;(<k>n</k>-<k>p</k>)!]</frm>;
      </ekz>
      <ekz>
        la <tld/>a&jcirc;oj de du elementoj el la aro 
        <frm>{<k>a</k>,<k>b</k>,<k>c</k>}</frm> estas
        <frm><k>ab</k></frm>, <frm><k>ac</k></frm>, <frm><k>bc</k></frm>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="arangx.0ajxo.MAT">aran&gcirc;a&jcirc;o</ref>,
      <ref cel="permut.0ajxo">permuta&jcirc;o</ref>.
    </refgrp>
    <rim>
      En la citita fonto Bricard parolas anka&ubreve; pri <ctl><tld/>a&jcirc;oj
      ripetaj</ctl> (ekz-e de <frm>3</frm> po <frm>2</frm>: 
      <frm><k>aa</k></frm>, <frm><k>ab</k></frm>, <frm><k>ac</k></frm>, 
      <frm><k>bb</k></frm>, <frm><k>bc</k></frm>, <frm><k>cc</k></frm>), 
      kio estas alia nocio, aperanta ekz-e en domenludo.
    </rim>
    <adm>
      Werner kaj PIV1 preferas "kombinacio" cxi-sence, sed mi ne vidas
      pravigon por tio. <aut>MB</aut>
    </adm>
    <trd lng="de">Kombination<klr tip="amb"> (von n Elementen zur p-ten Klasse)</klr> </trd>
    <trd lng="en">combination<klr tip="amb"> (of n objects taken p at a time)</klr> </trd>
    <trd lng="fr">combinaison<klr tip="amb"> (de n &eacute;l&eacute;ments pris p &agrave; p)</klr></trd>
    <trd lng="pl">kombinacja<klr tip="amb"> (z n po p)</klr></trd>
    <trd lng="ru">&c_s;&c_o;&c_ch;&c_je;&c_t;&c_a;&c_n;&c_i;&c_je;<klr tip="amb"> (&c_i;&c_z; n &c_p;&c_o; p)</klr></trd>
  </snc>
</drv>

<drv mrk="kombin.lineara0ajxo">
  <kap>lineara <tld/>(a&jcirc;)o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV2</bib></fnt>
  <snc>
    <dif>
      <klr>(el finia nombro da <ref cel="vektor.0o.MAT">vektoroj</ref>
      <frm><k>x</k><sub><k>i</k></sub></frm>)</klr>
      Sumo de termoj, konsistantaj el produto de &ccirc;iu el la vektoroj
      <frm><k>x</k><sub><k>i</k></sub></frm> per 
      <ref cel="skalar.0o.MAT">skalaro</ref>
      <frm>&alfa;<sub><k>i</k></sub></frm>; la skalaroj estas nomataj
      <ref cel="koefic.0o.lineara">koeficientoj</ref>:
      <ekz>
        <frm>&#8721; 
        &alfa;<sub><k>i</k></sub>&#8729;<k>x</k><sub><k>i</k></sub></frm>.
      </ekz>
    </dif>
    <ref tip="vid" cel="pend.linearenede0a">lineare nedependa.</ref>
  </snc>
  <trd lng="be">&c_l;&c_ib;&c_n;&c_je;&c_j;&c_n;&c_a;&c_ja; <ind>&c_k;&c_a;&c_m;&c_b;&c_ib;&c_n;&c_a;&c_c;&c_y;&c_ja;</ind></trd>
  <trd lng="de">Linearkombination</trd>
  <trd lng="en">linear <ind>combination</ind></trd>
  <trd lng="fr">combinaison lin&eacute;aire</trd>
  <trd lng="pl">kombinacja liniowa</trd>
  <trd lng="ru">&c_l;&c_i;&c_n;&c_je;&c_j;&c_n;&c_a;&c_ja; <ind>&c_k;&c_o;&c_m;&c_b;&c_i;&c_n;&c_a;&c_c;&c_i;&c_ja;</ind></trd>
</drv>
</art>
