<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>&scirc;ild</rad>/o <fnt><bib>PV</bib></fnt>
</kap>

<drv mrk="sxild.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="sxild.0o.KOMUNE">
    <dif>
      <ref tip="super" cel="tabul.0o">Tabulo</ref>
      surhavanta surskribon
      a&ubreve; simbolon klare videblan:
    </dif>
    <subsnc mrk="sxild.0o.MIL">
      <uzo tip="fak">HIS</uzo>
      <uzo tip="fak">MIL</uzo>
      <dif>
        Malmola <ref tip="super" cel="sxirm.0ilo">&scirc;irmilo</ref>,
        ofte kun insigno, kiun antikvaj militantoj portis per maldekstra
        brako kontra&ubreve; batoj kaj &jcirc;etoj:
        <ekz>
          <uzo tip="stl">FIG</uzo>
          Vi estas mia &scirc;irmo kaj <tld/>o
          <fnt><bib>MT</bib>, <lok>&Psa; 119:114</lok></fnt>.
        </ekz>
      </dif>
      <trd lng="be">&c_sh;&c_ch;&c_y;&c_t;</trd>
      <trd lng="bg">&c_Shch;&c_i;&c_t;</trd>
      <trd lng="de">Schild<klr tip="amb"> (Waffe)</klr></trd>
      <trd lng="en">shield</trd>
      <trd lng="es">escudo</trd>
      <trdgrp lng="fr">
        <trd>bouclier</trd>,
        <trd>&eacute;cu</trd>
      </trdgrp>
      <trd lng="hu">pajzs</trd>
      <trdgrp lng="id">
        <trd>perisai</trd>,
        <trd>tameng</trd>
      </trdgrp>
      <trd lng="it">scudo</trd>
      <trd lng="nl">schild</trd>
      <trd lng="pt">escudo</trd>
      <trd lng="ru">&c_shch;&c_i;&c_t;</trd>
    </subsnc>
    <subsnc mrk="sxild.0o.butika">
      <ref tip="dif" cel="sxild.pendo0o.KOMUNE">pendo<tld/>o</ref>
        <ekz>
          por vino bona <tld/>o ne bezona.
        </ekz>
      <trd lng="be">&c_sh;&c_y;&c_l;&c_mol;&c_d;&c_a;</trd>
      <trd lng="en">sign</trd>
      <trdgrp lng="es">
        <trd>r&oacute;tulo</trd>,
        <trd>letrero</trd>
      </trdgrp>
      <trd lng="fr">enseigne<klr> (de boutique)</klr></trd>
      <trd lng="hu">c&eacute;g&eacute;r</trd>
      <trd lng="it">insegna</trd>
      <trdgrp lng="nl">
        <trd>bord</trd>,
        <trd>uithangbord</trd>
      </trdgrp>
      <trdgrp lng="pt">
        <trd>placa</trd>,
        <trd>tabuleta</trd>
      </trdgrp>
      <trd lng="ru">&c_v;&c_y;&c_v;&c_je;&c_s;&c_k;&c_a;</trd>
    </subsnc>
    <subsnc mrk="sxild.0o.TRA">
      <dif>
        Tabulo montranta la lokojn, direktojn, instrukciojn al homoj
        irantaj en publika loko:
        <ekz>
          la germanaj &scirc;ipoj <klr>...</klr> pendigas en la haveno
          grandan
          <tld/>on kun la surskribo: &leftquot;Eniro malpermesita!&rightquot;
          <fnt><bib>Mortul&Scirc;ip</bib>, <lok>unua libro, &ccirc;apitro
          18a</lok></fnt>.
        </ekz>
      </dif>
      <refgrp tip="sub">
        <ref cel="sxild.voj0o.TRA">voj<tld/>o</ref>
      </refgrp>
      <trd lng="en">sign</trd>
      <trdgrp lng="fr">
        <trd>panneau indicateur</trd>,
        <trd>panneau routier</trd>
      </trdgrp>
      <trd lng="es">se&ntilde;al de tr&aacute;fico</trd>
     <trd lng="it">cartello<klr> (stradale o d'informazione)</klr></trd>
    </subsnc>
    <subsnc mrk="sxild.0o.nomsxildo">
      <ref tip="dif" cel="sxild.nom0o.KOMUNE">nom<tld/>o</ref>
      <ekz>
        &ccirc;iuj <tld/>oj sur la tablo, starigitaj po persono,
        estis Arabalfabetaj
        <fnt>
          <aut>Pejno S.</aut>,
          <vrk>Tagmeze en Tunizo</vrk>,
          <bib>Monato</bib>
        </fnt>;
      </ekz>
      <ekz>
        en la litova urbo Kaunas iun vendredan posttagmezon
        surstrate aperis homgranda leporo, kiu surhavis <tld/>on
        &leftquot;Mi &scirc;uldas&rightquot;
        <fnt>
        <aut>Last</aut>,
        <vrk>Litovio: &Scirc;uldanta leporo</vrk>,
        <bib>Monato</bib>
        </fnt>.
      </ekz> 
      <trdgrp lng="en">
        <trd>sign</trd>,
        <trd>tag</trd>
      </trdgrp>
      <trdgrp lng="es">
        <trd>etiqueta</trd>,
        <trd>placa</trd>
      </trdgrp>
      <trdgrp lng="it">
        <trd>targhetta</trd>,
        <trd>targa<klr> (targhetta)</klr></trd>,
        <trd>cartello</trd>
      </trdgrp>
    </subsnc>
  </snc>
  <trd lng="de">Schild</trd>
</drv>

<drv mrk="sxild.SX0o">
  <kap><tld lit="&Scirc;"/>o
    <fnt>
      <aut>D. Galad&iacute;-Enr&iacute;quez, A. Wandel</aut>,
      <vrk>La kosmo kaj ni</vrk>,
      <lok>2005</lok>
    </fnt>.
  </kap>
  <mlg>Sct</mlg>
  <snc mrk="sxild.SX0o.AST">
    <uzo tip="fak">AST</uzo>
    <dif>
      Sud-hemisfera <ref tip="lst" cel="stel.0figuro"
      lst="voko:stelfiguroj">stelfiguro</ref>
      (<trd lng="la">Scutum</trd>).
    </dif>
  </snc>
  <trd lng="en">Scutum</trd>
  <trdgrp lng="fr">
    <trd>Bouclier<klr tip="ind"> (constellation)</klr></trd>,
    <trd>&Eacute;cu de Sobieski</trd>
  </trdgrp>
</drv>

<drv mrk="sxild.et0o">
  <kap><tld/>eto</kap>
  <snc>
    <dif>
      Tabuleto montranta nomon a&ubreve; aliaj informojn, lokita &ccirc;e pordoj 
      kaj sonoriloj, sur la tabloj, sur la sidlokoj kaj sur la brusto: 
      <ekz>
        &leftquot;jen la <tld/>eto: O.L. Latunskij.&rightquot;
        <fnt>
          <bib>MkM</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="en">
    <trd>sign</trd>,
    <trd>tag</trd>
  </trdgrp>
  <trd lng="it">targhetta</trd>
</drv>

<drv mrk="sxild.blazon0o">
  <kap>blazon<tld/>o</kap>
  <snc mrk="sxild.blazon0o.HER">
    <uzo tip="fak">HER</uzo>
    <dif>
      Tabuleto en formo de milit<tld/>o, sur kiu estas pentrita 
      <ref tip="vid" cel="blazon.0o">blazono</ref>
      de iu nobelo, regno, urbo, korporacio, a&ubreve; simila:
      <ekz>
        en sia blazon<tld/>o ili havis cikonian flugilon kun fi&scirc;vosto
        <fnt>
          <aut>J. Ha&scaron;ek, trad. V. V&aacute;&ncaron;a</aut>
          <vrk>La aventuroj de la brava soldato &Scirc;vejk dum la
          mondmilito</vrk>
          <lok>2004</lok>
        </fnt>;
      </ekz>
      <ekz>
        la familia blazon<tld/>o trovi&gcirc;as tuje malsupre de la
        fenestro
        <fnt>
          <aut>H. Vallienne</aut>,
          <vrk>Kastelo de Prelongo</vrk>,
          <lok>1907</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Wappenschild</trd>
  <trdgrp lng="en">
    <trd>heraldic shield</trd>,
    <trd>escutcheon</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>blason</trd>,
    <trd>&eacute;cu<klr> (h&eacute;raldique)</klr></trd>
  </trdgrp>
  <trd lng="hu">c&iacute;merpajzs</trd>
  <trdgrp lng="it">
    <trd>scudo<klr> (araldico)</klr></trd>, 
    <trd>stemma</trd>
  </trdgrp>
</drv>

<drv mrk="sxild.nom0o">
  <kap>nom<tld/>o</kap>
  <snc mrk="sxild.nom0o.KOMUNE">
    <dif>
      Tabuleto montranta la nomon de sidanto
      en konferenco, la nomon de lo&gcirc;anto apud
      dompordo a&ubreve; simile:
      <ekz>Sur la muro pendas senmakula kupra nom<tld/>o
        <fnt>
          <aut>A. Tilmont</aut>,
          <vrk>Arthur C. Clarke, kosmopolita civitano kun okulo al la
          universo</vrk>,
          <bib>Monato</bib>,
          <lok>1998:4, p. 9a</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="kart.nom0o.KOMUNE">nomkarto</ref>
    </refgrp> 
  </snc>
  <trdgrp lng="en">
    <trd>name shield</trd>,
    <trd>name badge</trd>,
    <trd>name tag</trd>
  </trdgrp>
  <trd lng="it">targhetta</trd>
</drv>

<drv mrk="sxild.pendo0o">
  <kap>pendo<tld/>o</kap>
  <snc mrk="sxild.pendo0o.KOMUNE">
    <dif>
      Tabuleto pendigita super 
      <ref tip="malprt" cel="butik.0o">butiko</ref> a&ubreve;
      gastejo kun signoj a&ubreve; skriba&jcirc;oj anoncantaj la specon 
      de komerco:
      <ekz>
        la butikistoj tuj deprenis sian pendo<tld/>on
        <fnt>
          <aut>Lao She, trad. Wang Chongfang</aut>,
          <vrk><url
          ref="http://edu.i-lo.tarnow.pl/esp/lern/librejo/0026/">
          Kamelo &Scirc;jangzi</url></vrk>,
          <lok>1988</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_sh;&c_y;&c_l;&c_mol;&c_d;&c_a;</trd>
  <trd lng="en">sign</trd>
  <trdgrp lng="es">
    <trd>r&oacute;tulo</trd>,
    <trd>letrero</trd>
  </trdgrp>
  <trd lng="fr">enseigne<klr> (de boutique)</klr></trd>
  <trd lng="hu">c&eacute;g&eacute;r</trd>
  <trd lng="it">insegna</trd>
  <trdgrp lng="nl">
    <trd>bord</trd>,
    <trd>uithangbord</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>placa</trd>,
    <trd>tabuleta</trd>
  </trdgrp>
  <trd lng="ru">&c_v;&c_y;&c_v;&c_je;&c_s;&c_k;&c_a;</trd>
</drv>

<drv mrk="sxild.voj0o">
  <kap>voj<tld/>o, <var><kap>trafik<tld/>o</kap></var></kap>
  <snc mrk="sxild.voj0o.TRA">
    <uzo tip="fak">TRA</uzo>
    <dif>
      &Ccirc;evoja <tld/>o surhavanta informon a&ubreve; instrukcion al 
      veturantoj kaj irantoj:
      <ekz>
        voj<tld/>o montras, ke oni atingas la stacidomon de 
        Le&ubreve;tzsch post 1,8 km-oj
        <fnt>
          <aut>F. Kaiser</aut>,
          <vrk><url
          ref="http://karapacopanoramo.blogspot.com/2010/11/unua-sufice-longa-unucikla-ekskurso-en.html">
          Unua sufi&ccirc;e longa unucikla ekskurso...</url></vrk>,
          <lok>Karapaco-panoramo, 2010-11-03</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="sub">
      <ref cel="montr.voj0ilo.TRA">vojmontrilo</ref>
    </refgrp>
  </snc>
  <trd lng="fr">panneau routier</trd>
</drv>
</art>
