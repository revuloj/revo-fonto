<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: brajl.xml,v 1.24 2024/08/28 15:30:06 revo Exp $">
  <kap>
    <rad>Brajl</rad>/o
    <fnt><bib>PVEF</bib></fnt>
  </kap>
  <drv mrk="brajl.0o">
    <kap><tld/>o</kap>
    <snc>
    <uzo tip="fak">TIP</uzo>
    <uzo tip="fak">LIN</uzo>
      <dif>
        Speciala <ref tip="super" cel="skrib.0o.sistemo">skribo</ref> por blinduloj, elpensita de
        <nom>Louis Braille (Braj)</nom>,
        kie la literoj kodi&gcirc;as per aran&gcirc;o de elstaraj punktoj:
      <ekz>
        mi havis multe da kontaktoj kun blinduloj kaj surdoblinduloj pere de la <tld
        lit="b"/>oskribo
        <fnt>
          <bib>Monato</bib>
          <aut>Jacques Tuinder</aut>
          <vrk><url ref="&Monato;/2011/010356.php">Fonda&jcirc;o E-vid-E-nt-E jam 45 jarojn
          aktivadas</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        la baza kadro de <tld/>a simbolo nomi&gcirc;as &leftquot;<tld/>a &ccirc;elo&rightquot;,
        kiu havas lokon por 6 punktoj ordigitaj en la formo de ortangulo
        kun 3 punktoj vertikale kaj 2 horizontale
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=563">Brajlo</url></lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_sh;&c_r;&c_y;&c_f;&c_t;
    <ind>&c_B;&c_r;&c_a;&c_j;&c_l;&c_ja;</ind></trd>,
    <trd>&c_s;&c_y;&c_s;&c_t;&c_e;&c_m;&c_a;
    <ind>&c_B;&c_r;&c_a;&c_j;&c_l;&c_ja;</ind></trd>,
    <trd>&c_a;&c_z;&c_b;&c_u;&c_k;&c_a;
    <ind>&c_B;&c_r;&c_a;&c_j;&c_l;&c_ja;</ind></trd>
  </trdgrp>
  <trd lng="bg">&c_b;&c_r;&c_a;&c_j;&c_l;&c_o;&c_v;&c_a; &c_a;&c_z;&c_b;&c_u;&c_k;&c_a;</trd>
  <trdgrp lng="ca">
    <trd>braille</trd>,
    <trd>sistema braille</trd>
  </trdgrp>
  <trd lng="cs">Braillovo slepeck&eacute; p&iacute;smo</trd>
  <trdgrp lng="de">
    <trd>Braille-Schrift</trd>,
    <trd>Blindenschrift</trd>
  </trdgrp>
  <trd lng="en">braille</trd>
  <trd lng="fr">braille</trd>
  <trd lng="he">&#x5DB;&#x5EA;&#x5D1; &#x5D1;&#x5E8;&#x5D9;&#x5D9;&#x5DC;</trd>
  <trdgrp lng="hu">
    <trd>Braille-&iacute;r&aacute;s</trd>,
    <trd>vak&iacute;r&aacute;s</trd>
  </trdgrp>
  <trd lng="ja">&#x70B9;&#x5B57;  <pr>&#12390;&#12435;&#12376;</pr></trd>
  <trdgrp lng="nl">
    <trd>braille</trd>,
    <trd>blindenschrift</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>braill</trd>,
    <trd>pismo Braill'a</trd>,
    <trd>pismo wypuk&lstroke;e</trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_i;&c_s;&c_mol;&c_m;&c_o; &c_d;&c_l;&c_ja;
    &c_s;&c_l;&c_je;&c_p;&c_y;&c_h; &c_p;&c_o;
    &c_m;&c_je;&c_t;&c_o;&c_d;&c_u;
    &c_B;&c_r;&c_a;&c_j;&c_l;&c_ja;</trd>
  <trdgrp lng="sk">
    <trd>Braillovo p&iacute;smo</trd>,
    <trd>slepeck&eacute; p&iacute;smo Brailovo</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_b;&c_r;&c_a;&c_j;&#x43B;&c_ib;&c_v;&c_s;&#x44C;&#x43A;&c_i;&c_j; &c_d;&c_r;&c_u;&#x43A;/&c_sh;&c_r;&c_i;&c_f;&c_t;</trd>,
    <trd>&c_d;&c_r;&c_u;&#x43A; &c_d;&#x43B;&#x44F; &#x43D;&c_je;&c_z;&c_r;&#x44F;&c_ch;&c_i;&c_h;</trd>,
    <trd>&c_b;&c_r;&c_a;&c_j;&#x43B;&#x44C;</trd>
  </trdgrp>
</drv>
</art>
