<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>2</ofc>
<rad>segment</rad>/o
</kap>
<drv mrk="segmen.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="segmen.0o.gxenerale">
    <dif>
      <klr>(&gcirc;enerale, en elementa geometrio)</klr>
      Certa parto de 
      <ref tip="super" cel="figur.geometria0o">geometria figuro</ref>.
    </dif>
  </snc>
  <snc mrk="segmen.0o.linio">
    <dif>
      <klr>(de <ref cel="lini.0o.MAT">linio</ref>)</klr>
      Parto de &gcirc;i, entenata inter du &gcirc;iaj punktoj:
      <ekz>
        <tld/>o de hiperbolo;
      </ekz>
      <ekz>
        <ind><tld/>o de rekto</ind> 
        <klr>(<ref tip="sin" cel="strek.0o.segmento">streko</ref>)</klr>;
        <trd lng="de">Strecke</trd>
        <trd lng="fr">segment de droite</trd>
        <trd lng="ru">&c_o;&c_t;&c_r;&c_je;&c_z;&c_o;&c_k;</trd>
      </ekz>
      <ekz>
        la du punktojn, limantajn <tld/>on, oni nomas &gcirc;iaj
        <ref cel="ekstre.0o.segmento">ekstremoj</ref>.
      </ekz>
    </dif>
    <rim>
      La vorto <ctl>inter</ctl> en la difino supozigas, ke oni difinis
      certan ordon, ekz-e la manieron trairi la linion.
    </rim>
    <trd lng="fr">segment<klr tip="amb"> (de courbe)</klr></trd>
    <trd lng="ru">&c_k;&c_u;&c_s;&c_o;&c_k;<klr tip="amb"> (&c_k;&c_r;&c_i;&c_v;&c_o;&c_j;)</klr></trd>
  </snc>
  <snc mrk="segmen.0o.cirklo">
    <fnt>PV</fnt>
    <dif>
      <klr>(de <ref cel="cirkl.0o.surfaco">cirklo</ref>)</klr>
      Parto de &gcirc;i, entenata inter segmento
      <sncref ref="segmen.0o.linio"/> de &gcirc;ia
      <ref cel="rand.0o.figuro">rando</ref> kaj la responda
      <ref cel="sxnur.0o.cirklo">&scirc;nuro</ref>.
    </dif>
    <trd lng="fr">segment<klr tip="amb"> (de cercle)</klr></trd>
  </snc>
  <snc mrk="segmen.0o.reela">
    <dif>
      Fermita reela <ref cel="interv.0o">intervalo</ref>.
    </dif>
  </snc>
</drv>

</art>

<!--
$Log$
-->
</vortaro>
