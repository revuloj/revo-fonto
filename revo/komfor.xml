<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>komfort</rad>/o
</kap>
<drv mrk="komfor.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <dif>
      &Ccirc;io, kio igas la vivadon pli facila, la lo&gcirc;adon pli oportuna,
      la hejmon pli ripoziga; &ccirc;io, kio malpliigas penon kaj laci&gcirc;on
      en la &ccirc;iutaga vivo:
      <ekz>la <tld/>o ne &ccirc;iam kuni&gcirc;as kun la lukso<fnt>B</fnt></ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="buter.0o">butero</ref>,
      <ref cel="forn.0o">forno</ref>,
      <ref cel="sat">sate</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="en">
    <trd>comfort</trd>,
    <trd>ease</trd>,
    <trd>sense of <ind>well-being</ind></trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_k;&c_o;&c_m;&c_f;&c_o;&c_r;&c_t;</trd>,
    <trd>&c_u;&c_ju;&c_t;</trd>
  </trdgrp>
</drv>
<drv mrk="komfor.0a">
  <kap><tld/>a</kap>
  <snc>
    <uzo tip="klr">(io)</uzo>
    <dif>
      Provizita je <tld/>o, haviganta <tld/>on:
      <ekz><tld/>a domo, se&gcirc;o, vivo;</ekz>
      <ekz><tld/>e sidi;</ekz>
      <ekz>senti sin <tld/>e;</ekz>
      <ekz>&Ccirc;u vi estas <tld/>e?</ekz>
      <ekz>&Ccirc;u estas <tld/>e al vi?</ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="oportu.0a">oportuna</ref>,
      <ref cel="favor.0a">favora</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="en">
    <trd>comfortable</trd>,
    <trd>at ease</trd>
  </trdgrp>
  <trd lng="cs">pohodln&yacute;</trd>
  <trdgrp lng="ru">
    <trd>&c_k;&c_o;&c_m;&c_f;&c_o;&c_r;&c_t;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_k;&c_o;&c_m;&c_f;&c_o;&c_r;&c_t;&c_a;&c_b;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_u;&c_ju;&c_t;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_u;&c_d;&c_o;&c_b;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_b;&c_l;&c_a;&c_g;&c_o;&c_u;&c_s;&c_t;&c_r;&c_o;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
</drv>
<drv mrk="komfor.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <dif>
      Havigi <tld/>on al iu:
      <ekz>sin <tld/>igi en sia se&gcirc;o;</ekz>
      <ekz>&scirc;i venis por pli<tld/>igi la malfeli&ccirc;an beston.</ekz>
    </dif>
  </snc>
  <trd lng="en">make comfortable</trd>
</drv>
</art>
