<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: komfor.xml,v 1.26 2021/05/28 12:15:06 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>komfort</rad>/o <fnt><bib>PV</bib></fnt>
</kap>

<drv mrk="komfor.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="komfor.0o.HEJM">
    <dif>
      &Ccirc;io, kio igas la vivadon pli facila, la lo&gcirc;adon pli
      oportuna,
      la hejmon pli ripoziga; &ccirc;io, kio malpliigas penon kaj
      laci&gcirc;on
      en la &ccirc;iutaga vivo:
      <ekz>
        la <tld/>o ne &ccirc;iam kuni&gcirc;as kun la
        lukso<fnt>B</fnt>
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="buter.0o">butero</ref>,
      <ref cel="forn.0o">forno</ref>,
      <ref cel="sat.0a">sata</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_k;&c_a;&c_m;&c_f;&c_o;&c_r;&c_t;</trd>,
    <trd>&c_u;&c_t;&c_u;&c_l;&c_mol;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="bg">&c_k;&c_o;&c_m;&c_f;&c_o;&c_r;&c_t;</trd>
  <trdgrp lng="cs">
    <trd>komfort</trd>,
    <trd>pohodl&iacute;</trd>
  </trdgrp>
  <trd lng="de">Komfort</trd>
  <trdgrp lng="en">
    <trd>comfort</trd>,
    <trd>ease</trd>,
    <trd>sense of <ind>well-being</ind></trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>confort</trd>,
    <trd>bienestar</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>confort</trd>,
    <trd>aise<klr tip="ind"> (bien-&ecirc;tre)</klr></trd>,
    <trd>bien-&ecirc;tre</trd>,
  </trdgrp>
  <trd lng="nl">comfort</trd>
  <trdgrp lng="pl">
    <trd>komfort</trd>,
    <trd>wygoda</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>conforto</trd>,
    <trd>bem-estar</trd>,    
    <trd>comodidade</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_k;&c_o;&c_m;&c_f;&c_o;&c_r;&c_t;</trd>,
    <trd>&c_u;&c_ju;&c_t;</trd>
  </trdgrp>
  <trd lng="sk">pohodlie</trd>
</drv>

<drv mrk="komfor.0a">
  <kap><tld/>a</kap>
  <snc mrk="komfor.0a.io">
    <uzo tip="klr">(io)</uzo>
    <dif>
      Provizita je <tld/>o, haviganta <tld/>on:
      <ekz>
        <tld/>a domo, se&gcirc;o, vivo;
      </ekz>
      <ekz>
        <ind><tld/>e</ind> sidi;
        <trdgrp lng="es">
          <trd>c&oacute;modamente</trd>
        </trdgrp>
        <trdgrp lng="fr">
          <trd>confortablement</trd>,
          <trd>&agrave; son <ind>aise</ind></trd>
        </trdgrp>
        <trdgrp lng="pl">
          <trd>komfortowo</trd>,
          <trd>wygodnie</trd>
        </trdgrp>
      </ekz>
      <ekz>
        senti sin <tld/>e;
      </ekz>
      <ekz>
        <ind>&ccirc;u estas <tld/>e al vi?</ind>.
        <trd lng="es">&#xBF;est&aacute;n ustedes bien?</trd>
        <trd lng="fr">&ecirc;tes-vous &agrave; votre
        <ind>aise</ind>?</trd>
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="favor.0a">favora</ref>,
      <ref cel="oportu.0a">oportuna</ref>
    </refgrp>
  </snc>
  <adm>
    Eble mankas &ccirc;i tie drv mrk komforte? 
    <aut>VR</aut>
  </adm>
  <trdgrp lng="be">
    <trd>&c_k;&c_a;&c_m;&c_f;&c_o;&c_r;&c_t;&c_n;&c_y;</trd>,
    <trd>&c_k;&c_a;&c_m;&c_f;&c_a;&c_r;&c_t;&c_a;&c_b;&c_je;&c_l;&c_mol;&c_n;&c_y;</trd>,
    <trd>&c_z;&c_r;&c_u;&c_ch;&c_n;&c_y;</trd>,
    <trd>&c_v;&c_y;&c_g;&c_o;&c_d;&c_n;&c_y;</trd>,
    <trd>&c_d;&c_o;&c_b;&c_r;&c_a;&c_w;&c_p;&c_a;&c_r;&c_a;&c_d;&c_k;&c_a;&c_v;&c_a;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="bg">&c_k;&c_o;&c_m;&c_f;&c_o;&c_r;&c_t;&c_je;&c_n;</trd>
  <trd lng="bo">&#xF56;&#xF51;&#xF7A;&#xF0B;&#xF54;&#xF7C;&#xF0B;</trd>
  <trdgrp lng="cs">
    <trd>komfortn&iacute;</trd>,
    <trd>kom&oacute;dn&iacute;</trd>,
    <trd>pohodln&yacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>komfortabel</trd>,
    <trd>angenehm</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>comfortable</trd>,
    <trd>at ease</trd>
  </trdgrp>
  <trd lng="es">confortable</trd>
  <trd lng="fr">confortable</trd>
  <trdgrp lng="nl">
    <trd>comfortabel</trd>,
    <trd>aangenaam</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>komfortowy</trd>,
    <trd>wygodny</trd>
  </trdgrp>
  <trd lng="ro">confortabil </trd>
  <trdgrp lng="ru">
    <trd>&c_k;&c_o;&c_m;&c_f;&c_o;&c_r;&c_t;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_k;&c_o;&c_m;&c_f;&c_o;&c_r;&c_t;&c_a;&c_b;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_u;&c_ju;&c_t;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_u;&c_d;&c_o;&c_b;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_b;&c_l;&c_a;&c_g;&c_o;&c_u;&c_s;&c_t;&c_r;&c_o;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>komfortn&yacute;</trd>,
    <trd>pohodln&yacute;</trd>
  </trdgrp>
</drv>

<drv mrk="komfor.0igi">
  <kap><tld/>igi</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="komfor.0igi.HEJM">
    <dif>
      Havigi <tld/>on al iu:
      <ekz>
        <ind>sin <tld/>igi</ind> en sia se&gcirc;o;
        <trdgrp lng="fr">
          <trd>se mettre &agrave; l'<ind>aise</ind></trd>,
          <trd>se <ind>carrer</ind><klr tip="ind"> (s'installer &agrave;
          son aise)</klr></trd>
        </trdgrp>
      </ekz>
      <ekz>
        en portebla fajrujo brulis amaseto da lignokarbo,
        plenigante la &ccirc;ambron per <tld/>iga ardo
        <fnt><bib>I&scirc;tar</bib>n <lok>&ccirc;apitro 13a</lok></fnt>;
      </ekz>
      <ekz>
        &scirc;i venis por pli<tld/>igi la malfeli&ccirc;an
        beston.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">komfortabel machen</trd>
  <trd lng="en">make comfortable</trd>
  <trd lng="es">hacer <ind>confortable</ind></trd>
  <trd lng="fr">mettre &agrave; l'<ind>aise</ind></trd>
  <trd lng="nl">op zijn <ind>gemak</ind> stellen</trd>
  <trdgrp lng="pl">
    <trd>umo&sacute;ci&cacute;</trd>,
    <trd>usadowi&cacute;<klr>(wygodnie)</klr></trd>
  </trdgrp>
</drv>

<drv mrk="komfor.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc mrk="komfor.0igxi.iu">
    <uzo tip="klr">(iu)</uzo>
    <dif>
      <tld lit="K"/>e instali&gcirc;i en loko, en situacio:
      <ekz>
        li tremis pro malvarmo kaj turni&gcirc;adis, provante <tld/>i&gcirc;i
        <fnt>
          <aut>J. K. Rowling, trad. G. Baker kaj D. Harlow</aut>,
          <vrk><url ref="http://esperanto.la/Hari%20Potter%20kaj%20la%20Sxtono%20de%20la%20Sagxuloj%202-02-05.doc">
          Hari Potter kaj la &Scirc;tono de la Sa&gcirc;uloj</url></vrk>,
          <lok>2004</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="es">ponerse a gusto</trd>
    <trd lng="fr">se mettre &agrave; l'<ind>aise</ind></trd>
    <trdgrp lng="pl">
    <trd>umo&sacute;ci&cacute; si&eogonek;</trd>,
    <trd>usadowi&cacute; si&eogonek; <klr>(wygodnie)</klr></trd>,
    <trd>rozsi&aogonek;&sacute;&cacute; si&eogonek; <klr>(wygodnie)</klr></trd>
    </trdgrp>
  </snc>
</drv>

<drv mrk="komfor.mal0a">
  <kap>mal<tld/>a</kap>
  <snc mrk="komfor.mal0a.io">
    <dif>
      Sena je <tld/>o, malagrabla, embarasa:
      <ekz>
        mal<tld/>a, tro mallar&gcirc;a lito
        <fnt>
          <aut>C. Piron</aut>,
          <vrk>Gerda malaperis!</vrk>,
          <lok>1983</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">nepohodln&yacute;</trd>
  <trd lng="es">inc&oacute;modo</trd>
  <trdgrp lng="fr">
    <trd>incommode</trd>,
    <trd>inconfortable</trd>
  </trdgrp>
  <trd lng="sk">nepohodln&yacute;</trd>
</drv>

<drv mrk="komfor.mal0igi">
  <kap>mal<tld/>igi</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="komfor.mal0igi.io">
    <dif>
      Senigi je <tld/>o:
      <ekz>
        estis io pri tiu nevenkebla maljunulino,
        kio konsternis kaj mal<tld/>igis lin
        <fnt>
          <aut>A. Christie, trad. [O. Goldsmith]</aut>,
          <vrk>Murdo en la Orienta Ekspreso</vrk>,
          <lok>[1936?]</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="es">
    <trd>incomodar</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>incommoder</trd>,
    <trd>rendre <ind>inconfortable</ind></trd>
  </trdgrp>
</drv>
</art>
