<art mrk="$Id: sofist.xml,v 1.21 2023/10/21 07:46:47 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>sofist</rad>/o
</kap>
<drv mrk="sofist.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      <ref tip="super" cel="person.0o.homo">Persono</ref>
      kutime uzanta sofisman rezonmanieron:
      <ekz>
        ni povus citi tiajn grandajn lumojn, kiel ekzemple
        <nom>Bacon</nom>, <nom>Leibnitz</nom>, <nom>Pascal</nom>,
        <klr>[&#8230;]</klr> k. t. p., &#8208; sed ni rigardas la citatojn kiel
        batalilon nur de
        pse&ubreve;doinstruitaj <tld/>oj, tial, ne fanfaronante per citatoj, ni
        penos pruvi
        &ccirc;ion nur per la sola logiko
        <fnt>
          <bib>EE</bib>
        </fnt>;
      </ekz>
      <ekz>
        bele sonas la opinio, ke intelektulo &leftquot;sidi&gcirc;as kaj diskutas
        ekvilibre &gcirc;is la
        atingo de la solvo&#x201D;, beda&ubreve;rinde mi konas neniun &leftquot;intelektulon&#x201D;,
        kiu
        tiamaniere atingis sukceson, kial neniu el tiaj <tld/>oj
        &leftquot;diskutis ekvilibre&#x201D;
        kun <nom>Hitler</nom>, ke li &ccirc;esu militi
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="&Monato;/2003/007981.html">Al la
          intelektuloj de Monato</url></vrk>
        </fnt>?
      </ekz>
    </dif>
  </snc>
  <snc>
    <uzo tip="fak">HIS</uzo>
    <dif>
      &Ccirc;e la antikvaj grekoj, duonfilozofo a&ubreve; pli &gcirc;uste
      <ref tip="super" cel="retor.0o">retoro</ref>, kiu
      instruis pruvi &scirc;ajne &ccirc;ion ajn per trompaj rezonoj, tute ne
      zorgante pri la vereco a&ubreve; malvereco de la pruvota&jcirc;o.
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_a;&c_f;&c_ib;&c_s;&c_t;</trd>
  <trd lng="bg">&c_s;&c_o;&c_f;&c_i;&c_s;&c_t;</trd>
  <trdgrp lng="cs">
    <trd>sofista</trd>,
    <trd>u&zcaron;ivatel sofizm&uring;</trd>
  </trdgrp>
  <trd lng="de">Sophist</trd>
  <trd lng="en">sophist</trd>
  <trd lng="fr">sophiste</trd>
  <trd lng="hu">szofista</trd>
  <trdgrp lng="ja">
    <trd>&#x30BD;&#x30D5;&#x30A3;&#x30B9;&#x30C8;</trd>,
    <trd>&#x8A6D;&#x5F01;&#x5BB6;  <pr>&#x304D;&#12409;&#12435;&#x304B;</pr></trd>
  </trdgrp>
  <trd lng="nl">sofist</trd>
  <trd lng="pl">sofista</trd>
  <trd lng="ru">&c_s;&c_o;&c_f;&c_i;&c_s;&c_t;</trd>
  <trd lng="sk">sofista</trd>
  <trd lng="uk">&c_s;&#x43E;&c_f;&c_ib;&c_s;&c_t;</trd>
</drv>
</art>
