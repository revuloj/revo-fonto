<kap>
  <rad>periheli</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="perihe.0o">
  <kap><tld/>o</kap>
  <snc mrk="perihe.0o.AST">
    <uzo tip="fak">AST</uzo>
    <dif>
      Punkto de la orbito de sun-&ccirc;irka&ubreve;anta objekto, 
      &ccirc;e kiu &gcirc;i estas plej proksima al la suno,
      kontraste al <ref tip="ant" cel="afeli.0o">afelio</ref>:
      <ekz>
        se la planedo nuntempe trovi&gcirc;us proksime al <tld/>o
        <klr>...</klr> &gcirc;i estus pli brila kaj povus esti
        trovita en malnovaj fotoj de tiu regiono en la &ccirc;ielo
        <fnt>
          <aut>A. Wandel</aut>,
          <vrk><url ref="&Sezonoj;2018/01/wandel-3">
          Novaj horizontoj trans Plutono</url></vrk>,
          <lok>La Ondo de Esperanto, 2017:12</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="super">
      <ref cel="apsid.0o">apsido</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_p;&c_e;&c_r;&c_y;&c_g;&c_je;&c_l;&c_ib;&c_j;</trd>
  <trd lng="ca">periheli</trd>
  <trdgrp lng="cs">
    <trd>p&rcaron;&iacute;slun&iacute;</trd>,
    <trd>perihel</trd>,
    <trd>perih&eacute;lium</trd>,
    <trd>p&rcaron;&iacute;slun&iacute;</trd>
  </trdgrp>
  <trd lng="da">perihelion</trd>
  <trd lng="de">Perihel</trd>
  <trd lng="en">perihelion</trd>
  <trd lng="es">perihelio</trd>
  <trd lng="fi">periheli</trd>
  <trd lng="fr">p&eacute;rih&eacute;lie</trd>
  <trdgrp lng="hu">
    <trd>napk&ouml;zelpont</trd>,
    <trd>perih&eacute;lium</trd></trdgrp>
  <trd lng="it">perielio</trd>
  <trd lng="ja">&#x8FD1;&#x65E5;&#x70B9; <pr>&#x304D;&#x3093;&#x3058;&#x3064;&#x3066;&#x3093;</pr></trd>
  <trd lng="nl">perihelium</trd>
  <trd lng="pl">peryhelium</trd>
  <trd lng="pt">peri&eacute;lio</trd>
  <trd lng="ru">&c_p;&c_je;&c_r;&c_i;&c_g;&c_je;&c_l;&c_i;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>perih&eacute;lium</trd>,
    <trd>pr&iacute;slnie</trd>
  </trdgrp>
  <trd lng="tr">enberi</trd>
  <trd lng="uk">&#x43F;&#x435;&#x440;&#x438;&#x433;&#x435;&#x43B;&#x456;&#x439;</trd>
  <trdgrp lng="zh">
    <trd>&#x8FD1;&#x65E5;&#x70B9; <pr>j&#xEC;nr&#xEC;di&#x1CE;n</pr></trd>,
    <trd>&#x8FD1;&#x65E5;&#x9EDE; <pr>j&#xEC;nr&#xEC;di&#x1CE;n</pr></trd>
  </trdgrp>
</drv>
</art>
