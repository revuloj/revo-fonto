<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>fleks</rad>/i
</kap>
<drv mrk="fleks.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc num="1">
    <dif>
      Kurbigi, arkigi:
      <ekz>
        <tld/>i ferfadenon;
      </ekz>
      <ekz>
        la feino <tld/>is flanken la bran&ccirc;ojn
        <fnt>(<aut>Andersen, trad. Zamenhof</aut>: <vrk>Fabeloj,
        &Gcirc;ardeno de la paradizo</vrk>)</fnt>;
      </ekz>
      <ekz>
        <tld/>u arbon dum &gcirc;ia juneco
        <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt> 
        <klr>(ne lasu pasi la &gcirc;ustan momenton!)</klr>;
      </ekz>
      <ekz>
        <tld/>i la korpon, la brakon;
      </ekz>
      <ekz>
        li malrapide pa&scirc;is, <tld/>ita de malespero;
      </ekz>
      <ekz>
        (mult)<tld/>ita <klr>(multkurba, serpentuma)</klr> vojo<fnt>Z</fnt>.
      </ekz>  
    </dif>
    <trdgrp lng="de">
      <trd>biegen</trd>,
      <trd>beugen</trd>,
      <trd>kr&uuml;men</trd>
    </trdgrp>
  </snc>
  <snc num="2">
    <uzo tip="klr">(f)</uzo>
    <dif>
      Cedigi, obeigi:
      <ekz>
        <tld/>i la junajn spiritojn sub disciplino;
      </ekz>
      <ekz>
        <tld/>i la venkiton sub severa le&gcirc;o;
      </ekz>
      <ekz>
        vian obstinecon mi <tld/>os
        (<refgrp tip="sin">
          <ref cel="humil.0igi">humiligi</ref>,
          <ref cel="fier">malfierigi</ref>)
        </refgrp>;
      </ekz>
      <ekz>
        <tld/>i la lingvon la&ubreve; sia gusto. 
      </ekz>
    </dif>
    <trd lng="de">beugen</trd>
  </snc>
  <trd lng="en">bend</trd>
</drv>
<drv mrk="fleks.0a">
  <kap><tld/>a<fnt>Z</fnt></kap>
  <snc num="1">
    <dif>
      <tld/>ita. 
    </dif>
  </snc>
  <snc num="2">
    <dif>
      <tld/>ebla:
      <ekz>
        <tld/>aj vermoj
        <fnt>(<aut>Andersen, trad. Zamenhof</aut>: <vrk>Fabeloj,
        La virineto de maro</vrk>)</fnt>;
      </ekz>
      <ekz>
        <tld/>aj brakoj<fnt>Z</fnt>.
      </ekz> 
    </dif>
  </snc>
</drv>
<drv mrk="fleks.0o0ajxo">
  <kap><tld/>o, <tld/>a&jcirc;o</kap>
  <snc>
    <dif>
      <tld/>ita parto de io:
      <ekz>
        la rivero havas multe da <tld/>oj
        <fnt>(<aut>Andersen, trad. Zamenhof</aut>: <vrk>Fabeloj,
        Malgranda niko kaj granda niko</vrk>)</fnt>;
      </ekz>
      <ekz>
        la <tld/>a&jcirc;oj de la vojo.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Biegung</trd>
</drv>
<drv mrk="fleks.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc num="1">
    <dif>
      Kurbi&gcirc;i:
      <ekz>
        pli bone <klr>[estas]</klr> <tld/>i&gcirc;i ol rompi&gcirc;i
        <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>;
      </ekz>
      <ekz>
        <tld/>i&gcirc;i sub peza &scirc;ar&gcirc;o;
      </ekz>
      <ekz>
        bran&ccirc;oj <tld/>i&gcirc;as pro pezo de la fruktoj;
      </ekz>
      <ekz>
        tie <tld/>i&gcirc;as la vojo.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>sich <ind>biegen</ind></trd>,
      <trd>sich <ind>beugen</ind></trd>,
      <trd>sich <ind>kr&uuml;mmen</ind></trd>
    </trdgrp>
  </snc>
  <snc num="2">
    <uzo tip="klr">(f)</uzo>
    <dif>
      Cedi, submeti&gcirc;i:
      <ekz>
        <tld/>i&gcirc;i anta&ubreve; la forto sub la destino;
      </ekz>
      <ekz>
        lia kura&gcirc;o <tld/>i&gcirc;is;
      </ekz>
      <ekz>
        Esp-o kreskis regule, neniam <tld/>i&gcirc;ante
        (deklini&gcirc;ante, misformi&gcirc;ante) a&ubreve;
        kripli&gcirc;ante<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="de">sich <ind>beugen</ind></trd>
  </snc>
</drv>
<drv mrk="fleks.0igxo">
  <kap><tld/>i&gcirc;o</kap>
  <snc>
    <dif>
      Movo, per kiu io <tld/>i&gcirc;as:
      <ekz>
        <tld/>i&gcirc;o de risorto;
      </ekz>
      <ekz>
        &ccirc;e la <tld/>i&gcirc;o de la rivero.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Biegung</trd>,
    <trd>Beugung</trd>,
    <trd>Kr&uuml;mmung</trd>
  </trdgrp>
</drv>
<drv mrk="fleks.0ebla">
  <kap><tld/>ebla</kap>
  <snc>
    <dif>
      Epiteto karakterizanta ion, kion oni povas <tld/>i, a&ubreve; iun, kiun
      oni povas cedigi:
      <ekz>
        kano estas <tld/>ebla
        <refgrp tip="sin">(
          <ref cel="mol.0a">mola</ref>,
          <ref cel="elast.0a">elasta</ref>)
        </refgrp>;
      </ekz>
      <ekz>
        <klr>(f)</klr> <tld/>ebla lingvo, stilo; 
      </ekz>
      <ekz>
        ne<tld/>ebla karaktero
        (<ref tip="sin" cel="fer.0a">fera</ref>).
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>biegsam</trd>,
    <trd>beugsam <klr>(karaktero)</klr></trd>
  </trdgrp>
</drv>
<drv mrk="fleks.0igxema">
  <kap><tld/>i&gcirc;ema</kap>
  <snc>
    <dif>
      Facile <tld/>ebla:
      <ekz>
        longa <tld/>i&gcirc;ema kolo de cigno<fnt>Z</fnt>.
      </ekz> 
    </dif>
  </snc>
</drv>
<drv mrk="fleks.genu0i">
  <kap>genu<tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Surgenui&gcirc;i.  
    </dif>
  </snc>
</drv>
</art>
