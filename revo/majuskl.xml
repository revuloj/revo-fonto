<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <rad>majuskl</rad>/o
    </kap>
    <drv mrk="majuskl.0a">
      <kap><tld/>a</kap>
      <uzo tip="fak">HIS</uzo>
      <uzo tip="fak">KOMP</uzo>
      <uzo tip="fak">TIP</uzo>
      <snc>
        <dif>
          <klr>(pri signo)</klr>
          Apartenanta al <ref tip="vid" cel="sign.0aro.KOMP">signaro</ref>,
          kies &ccirc;iuj <ref cel="sign.0obildo">signobildoj</ref> lokeblas
          inter du paralelaj horizontalaj linioj, kiujn ili tu&scirc;as:
          <ekz>
            la <tld/>aj &scirc;tonsurskriboj de la Romiaj monumentoj;
          </ekz><ekz>
            la <tld/>aj <ref tip="vid" cel="cifer.0o">ciferoj</ref>.
          </ekz>
        </dif>
        <rim>
          La eksterliniaj <ref cel="diakrit.0ilo">diakritiloj</ref>
          rompas tiun difinon; por la lingvoj uzantaj ilin (anka&ubreve;
          Esperanto) oni kutime konsideras nur la bazan signon &dash;
          kvankam en iuj presa&jcirc;oj kaj en ekranaj tiparoj oni pro la
          evidenta praktika motivo iam malaltigas la tutan diakrita&jcirc;on
          tiel ke &gcirc;i plene loki&gcirc;u inter la du linioj; tiel estas presita,
          ekz-e, la <ctl>Enciklopedio de Esperanto</ctl>.
        </rim>
      </snc>
      <trdgrp lng="en">
        <trd>majuscule <klr>(script)</klr></trd>;
        <trd>capital <klr>(letter)</klr></trd>,
        <trd>uppercase <klr>(letter)</klr></trd></trdgrp>
      <trdgrp lng="ru">
        <trd>&c_m;&c_a;&c_ju;&c_s;&c_k;&c_u;&c_l;&c_mol;&c_n;&c_y;&c_j; <klr>(&c_o; &c_p;&c_i;&c_s;&c_mol;&c_m;&c_je;)</klr></trd>;
        <trd>&c_p;&c_r;&c_o;&c_p;&c_i;&c_s;&c_n;&c_a;&c_ja; <klr>(&c_b;&c_u;&c_k;&c_v;&c_a;)</klr></trd>,
        <trd>&c_z;&c_a;&c_g;&c_l;&c_a;&c_v;&c_n;&c_a;&c_ja; <klr>(&c_b;&c_u;&c_k;&c_v;&c_a;)</klr></trd></trdgrp>
    </drv>
    <drv mrk="majuskl.0&c_o;">
      <kap><tld/>o</kap>
      <uzo tip="fak">GRA</uzo>
      <uzo tip="fak">TIP</uzo>
      <uzo tip="fak">KOMP</uzo>
      <snc>
        <dif>
          <ref tip="sin" cel="liter.granda0o">Granda litero</ref>.
        </dif>
      </snc>
      <ref tip="sin" cel="liter.cxef0o">&ccirc;eflitero</ref>
    </drv>
  </art>

<!--
$Log$
-->
</vortaro>