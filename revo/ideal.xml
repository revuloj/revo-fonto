<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>ideal</rad>/a
</kap>
<drv mrk="ideal.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Konforma al la ideo, kiun ni havas pri perfekteco:
      <ekz>
        <tld/>aj formoj;
      </ekz>
      <ekz>
        <tld/>a beleco, perfekteco;
      </ekz>
      <ekz>
        <tld/>a virino.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">ideal</trd>
  <trd lng="en">ideal</trd>
  <trd lng="fr">id&eacute;al<klr tip="ind"> (adj.)</klr></trd>
  <trd lng="nl">ideaal</trd>
  <trd lng="ru">&c_i;&c_d;&c_je;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
  <trd lng="sv">ideal</trd>
</drv>

<drv mrk="ideal.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      La plej alta perfekteco, kiun oni povas imagi sed neniam plene atingi:
      <ekz>
        la <tld/>o revita de la poeto;
      </ekz>
      <ekz>
        konstanta paco estas plej nobla <tld/>o de la homaro.
      </ekz>
    </dif>
    <trd lng="de">Ideal</trd>
    <trd lng="en">ideal</trd>
    <trd lng="fr">id&eacute;al<klr tip="ind"> (subst.)</klr></trd>
    <trd lng="sv">ideal</trd>
  </snc>
  <snc mrk="ideal.0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>MatVort</bib></fnt>
    <dif>
      <klr>(de <ref cel="ring.0o.MAT">ringo</ref> <em>R</em>)</klr>
      Tia adicia <ref tip="super" cel="grup.sub0o.MAT">subgrupo</ref>
      <em>I</em> de <em>R</em>, ke al &gcirc;i apartenas &ccirc;iuj
      produtoj a.b (maldekstra <tld/>o), a&ubreve; b.a (dekstra <tld/>o)
      a&ubreve; a.b kaj b.a (amba&ubreve;flanka <tld/>o) por ajna
      elemento a en <em>I</em> kaj b en <em>R</em>:
      <ekz>
        en la ringo de entjeroj la obloj de p konsistigas
        amba&ubreve;flankan <tld/>on.
      </ekz>
    </dif>
    <ref tip="vid" cel="ring.sub0o">subringo;</ref>
    <refgrp tip="vid">
      Ecoj de idealo:
      <ref cel="cxef.0a.idealo">&ccirc;efa</ref>,
      <ref cel="maksim1.0a.idealo">maksimuma</ref>,
      <ref cel="prim.0a.idealo">prima</ref>.
    </refgrp>
    <trd lng="de">Ideal</trd>
    <trd lng="en">ideal</trd>
    <trd lng="fr">id&eacute;al<klr tip="ind"> (subst., math.)</klr></trd>
  </snc>
  <trd lng="nl">ideaal</trd>
  <trd lng="ru">&c_i;&c_d;&c_je;&c_a;&c_l;</trd>
</drv>

<drv mrk="ideal.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <dif>
      Doni al io a&ubreve; iu <tld/>an karakteron:
      <ekz>
        ne estas bone tro <tld/>igi la mondon kaj la homojn, &ccirc;ar
        tio preparas kruelajn elrevi&gcirc;ojn.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">id&eacute;aliser</trd>
  <trd lng="nl">idealiseren</trd>
  <trd lng="ru">&c_i;&c_d;&c_je;&c_a;&c_l;&c_i;&c_z;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trd lng="sv">idealisera</trd>
</drv>

<drv mrk="ideal.0ismo">
  <kap><ofc>3</ofc><tld/>ismo</kap>
  <snc mrk="ideal.0ismo.morala">
    <dif>
      Celado al <tld/>o, al perfekteco; senzorgo pri la reala vulgara vivo.
    </dif>
    <refgrp tip="vid">
      <ref cel="spirit3.0o">spiritualismo</ref>.
    </refgrp>
  </snc>
  <snc mrk="ideal.0ismo.ideismo">
    <uzo tip="stl">EVI</uzo>
    <uzo tip="fak">FIL</uzo>
    <dif>
      <ref tip="dif" cel="ide.0ismo">Ideismo</ref>.
    </dif>
  </snc>
  <snc mrk="ideal.0ismo.BELA">
    <uzo tip="fak">BELA</uzo>
    <dif>
      Koncepto pri arto kiel tradukanto de ia <tld/>o,
      ne kiel imitanto de la realo.
    </dif>
    <refgrp tip="ant">
      <ref cel="real.0ismo">realismo</ref>.
    </refgrp>
  </snc>
  <adm>
    Temas pri oficiala radiko, ne pri derivajxo. <aut>MB</aut>
  </adm>
  <trd lng="fr">id&eacute;alisme</trd>
  <trd lng="nl">idealisme</trd>
  <trd lng="ru">&c_i;&c_d;&c_je;&c_a;&c_l;&c_i;&c_z;&c_m;</trd>
</drv>

<drv mrk="ideal.0isto">
  <kap><tld/>isto<fnt>Z</fnt></kap>
  <snc mrk="ideal.0isto.morale">
    <dif>
      Homo, kiu celas al <tld/>o, ne zorgante pri la krudaj
      faktoj de la vivo.
    </dif>
    <refgrp tip="ant">
      <ref cel="materi1.0isto">materialisto</ref>,
      <ref cel="real">realisto</ref>.
    </refgrp>
  </snc>
  <snc mrk="ideal.0isto.ideisto">
    <uzo tip="stl">EVI</uzo>
    <uzo tip="fak">FIL</uzo>
    <dif>
      <ref tip="dif" cel="ide.0isto">Ideisto</ref>.
    </dif>
  </snc>
  <adm>
    Cxu derivajxo? <aut>MB</aut>
  </adm>
  <trd lng="nl">idealist</trd>
  <trd lng="ru">&c_i;&c_d;&c_je;&c_a;&c_l;&c_i;&c_s;&c_t;</trd>
  <trd lng="sv">idealist</trd>
</drv>

<drv mrk="ideal.cxef0a">
  <kap>&ccirc;ef<tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="ideal.cxef0a.MAT">
    <dif>
      <klr>(p.p. <ref cel="ring.0o.MAT">ringo</ref>)</klr>
      Tia, ke &ccirc;iuj &gcirc;iaj <ref cel="ideal.0o.MAT"><tld/>oj</ref>
      estas <ref cel="cxef.0a.idealo">&ccirc;efaj</ref>.
    </dif>
    <rim>
      Kelkaj a&ubreve;toroj postulas krome, ke la ringo estu
      <ref cel="komut.0eca.ringo">komuteca</ref> a&ubreve;
      <ref cel="integr.0a.MAT">integra</ref>.
    </rim>
    <trd lng="de">Hauptideal-<klr tip="amb">(ring)</klr></trd>
    <trd lng="en">principal ideal<klr tip="amb"> (ring)</klr></trd>
    <trd lng="fr"><klr tip="ind">(anneau) </klr>principal</trd>
    <trd lng="ru"><klr tip="amb">(&c_k;&c_o;&c_l;&c_mol;&c_c;&c_o;) </klr>&c_g;&c_l;&c_a;&c_v;&c_n;&c_y;&c_h; &c_i;&c_d;&c_je;&c_a;&c_l;&c_o;&c_v;</trd>
  </snc>
</drv>

<drv mrk="ideal.sen0a">
  <kap>sen<tld/>a</kap>
  <snc>
    <dif>
      Ne zorganta pri <tld/>o, atenta nur pri la materia
      flanko de la mondo.
    </dif>
  </snc>
  <trd lng="nl">materialistisch</trd>
  <trd lng="ru">&c_b;&c_je;&c_z;&c_y;&c_d;&c_je;&c_j;&c_n;&c_y;&c_j;</trd>
</drv>
</art>
