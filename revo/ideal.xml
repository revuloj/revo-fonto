    </klr></trd>
    <trd lng="it"><ind>ideale</ind> principale<klr tip="amb">
    (mat.)</klr>
    </trd>
    <trd lng="pl"><klr tip="ind">(pier&sacute;cie&nacute;) 
    </klr>idea&lstroke;&oacute;w
    g&lstroke;&oacute;wnych</trd>
