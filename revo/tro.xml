<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>tro</rad>
</kap>
<!-- .............. tro I ........... -->
<subart>
  <gra><vspec>adverbo</vspec></gra>
  <dif>
    pli ol sufi&ccirc;e, ol necese, ol konvene, ol
    &gcirc;ustmezure:
  </dif>
  <snc>
    <ekz>
      <tld/> longa;
    </ekz>
    <ekz>
      <tld/> rapide;
    </ekz>
    <ekz>
      <tld/> ami ludon;
    </ekz>
    <ekz>
      <tld/> da pano;
    </ekz>
    <ekz>
      <tld/> grandaj kalkuloj kondukas al nuloj
      <klr>(kiu <tld/> alte svingas, nenion atingas <sup>Z</sup>)</klr>
      <fnt><bib>PrV</bib></fnt>;
    </ekz>
    <ekz>
      se sako <tld/> pleni&gcirc;as, &gcirc;i balda&ubreve;
      dis&scirc;iri&gcirc;as
      <fnt><bib>PrV</bib></fnt>;
    </ekz>
    <ekz>
      <tld/> da kuiristoj ka&ccirc;on difektas
      <klr>(tro multaj kunlaborantoj, malbona rezulto)</klr>
      <fnt><bib>PrV</bib></fnt>;
    </ekz>
    <ekz>
      ilia nombro estas <tld/> granda por ke ni povu ilin &ccirc;iujn
      citi<fnt>Z</fnt>;
    </ekz>
    <ekz>
      la aero tie estas <tld/> peza, ke prudenta ekzista&jcirc;o tie
      povu vivi<fnt>Z</fnt>;
    </ekz>
    <ekz>
      tiu sistemo postulas <tld/> grandan pripensadon por povi esti
      enkondukita en la ordinaran interkomuniki&gcirc;on<fnt>Z</fnt>;
    </ekz>
    <ekz>
      li rigardis la tutan mondon kiel farson <tld/> sensencan, por ke
      prudenta homo povu serioze pensi pri &gcirc;i<fnt>Z</fnt>;
    </ekz>
    <ekz>
      la ideo estas <tld/> altiranta por ke la homoj tute
      rifuzi&gcirc;us je &gcirc;i<fnt>Z</fnt>;
    </ekz>
    <ekz>
      liaj instrukcioj estis <tld/> klaraj, ol ke mi erarus;
    </ekz>
    <ekz>
      la laboranta popolo estas <tld/> okupata per sia laboro, ol ke
      &gcirc;i povus interesi&gcirc;i je tiuj demandoj.
    </ekz>
  </snc>
  <trdgrp lng="de">
    <trd>zu</trd>,
    <trd>zu viel</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>muito</trd>,
    <trd>demais</trd>,
    <trd>demasiadamente</trd>
  </trdgrp>
  <trd lng="en">too</trd>
  <trd lng="es">demasiado</trd>
  <trdgrp lng="fr">
    <trd>excessivement</trd>,
    <trd>trop</trd>
  </trdgrp>
  <trd lng="hu">t&uacute;l</trd>
  <trdgrp lng="nl">
    <trd>te</trd>,
    <trd>te <ind>zeer</ind></trd>,
    <trd>te <ind>veel</ind></trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_s;&c_l;&c_i;&c_sh;&c_k;&c_o;&c_m;</trd>,
    <trd>&c_ch;&c_je;&c_r;&c_je;&c_s;&c_ch;&c_u;&c_r;</trd>
  </trdgrp>
</subart>
<!-- ............ tro II ........... -->
<subart>
  <dif>
    Samsenca vortero:
  </dif>
  <drv mrk="tro.0a">
    <kap><tld/>a</kap>
    <snc>
      <dif>
        Estanta en pli ol sufi&ccirc;a kvanto a&ubreve; grado; superanta la
        &gcirc;ustan mezuron:
        <ekz>
          <tld/>a laboro;
        </ekz>
        <ekz>
          <tld/>a festeno estas veneno
          <fnt><bib>PrV</bib></fnt>
        </ekz>
      </dif>
      <refgrp tip="sin">
        <ref cel="eksces.0a">ekscesa</ref>
      </refgrp>
    </snc>
    <trd lng="es">excesivo</trd>
    <trdgrp lng="fr">
      <trd>en <ind>trop</ind></trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>t&uacute;l-</trd>,
      <trd>t&uacute;ls&aacute;gos</trd>
    </trdgrp>
    <trd lng="nl">overdreven</trd>
    <trd lng="ru">&c_ch;&c_r;&c_je;&c_z;&c_m;&c_je;&c_r;&c_n;&c_y;&c_j;</trd>
  </drv>
  <drv mrk="tro.0e">
    <kap><tld/>e</kap>
    <snc>
      <dif>
        Estante en <tld/>a kvanto, superanta la &gcirc;ustan mezuron:
        <ekz>
          mi trovis
          du librojn <tld/>e en la kesto.
        </ekz>
      </dif>
    </snc>
    <trd lng="es">excesivamente</trd>
    <trdgrp lng="fr">
      <trd>excessivement</trd>,
      <trd>trop</trd>
    </trdgrp>
    <trd lng="hu">t&uacute;ls&aacute;gosan</trd>
    <trd lng="nl">te <ind>veel</ind></trd>
  </drv>
  <drv mrk="tro.0ajxo">
    <kap><tld/>a&jcirc;o</kap>
    <snc>
      <dif>
        Io superanta la &gcirc;ustan mezuron:
        <ekz>
          <tld/>a&jcirc;oj de tirano
        </ekz>
      </dif>
      <ref tip="sin" cel="eksces.0o">eksceso</ref>
    </snc>
    <trd lng="es">exceso</trd>
    <trdgrp lng="fr">
      <trd>exc&egrave;s</trd>,
      <trd>superflu</trd>
    </trdgrp>
    <trdgrp lng="nl">
      <trd>iets <ind>overdrevens</ind></trd>,
      <trd>exces</trd>
    </trdgrp>
    <trd lng="ru">&c_i;&c_z;&c_l;&c_i;&c_sh;&c_je;&c_k;</trd>
  </drv>
  <drv mrk="tro.0igo">
    <kap><tld/>igo</kap>
    <snc mrk="tro.0igo.hiperbolo">
      <uzo tip="fak">BELE</uzo>
      <uzo tip="fak">LIN</uzo>
      <dif>
        <ref tip="super" cel="figur.stil0o">Stilfiguro</ref>
        kiu konsistas en tio ke esprimata senco estas
        prezentata pli forte ol kutime, por emfazo, atentigo a&ubreve;
        alia efekto:
        <ekz>
          sen <tld/>igo oni povas diri, ke apud Pi-Bast &ccirc;iutage
          metis siajn tendojn tridek mil eksterlanduloj
          <fnt><bib>Far2</bib>, <lok>&Ccirc;ap. 4.</lok></fnt>;
        </ekz>
      </dif>
      <ref tip="sin" cel="hiperb.0o">hiperbolo</ref>
    </snc>
    <trd lng="en">overstatement</trd>
    <trdgrp lng="fr">
      <trd>exag&eacute;ration</trd>,
      <trd>hyperbole</trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>t&uacute;lz&aacute;s</trd>,
      <trd>hiperbola</trd>
    </trdgrp>
    <trd lng="nl">overdrijving</trd>
    <trd lng="ru">&c_p;&c_r;&c_je;&c_u;&c_v;&c_je;&c_l;&c_i;&c_ch;&c_je;&c_n;&c_i;&c_je;</trd>
  </drv>
  <drv mrk="tro.mal0igo">
    <kap>mal<tld/>igo</kap>
    <snc mrk="tro.mal0igo.litoto">
      <uzo tip="fak">BELE</uzo>
      <uzo tip="fak">LIN</uzo>
      <dif>
        <ref tip="super" cel="figur.stil0o">Stilfiguro</ref>
        per kiu oni plirimarkigas la sencon
        malfortigante la esprimon:
        <ekz>
          <em>&c_M;.Rauhamaa:</em> Microsoft ne estas
          bonvolorganiza&jcirc;o. &dash;
          <em>G.Partlow:</em> Jen la plej elstara mal<tld/>igo de
          la jaro... a&ubreve; eble de la jardeko!
          <fnt><lok>soc.culture.esperanto,
          Message-ID:
          680335c5.0109101508.2ad95a79@posting.google.com</lok></fnt>
        </ekz>
      </dif>
      <refgrp tip="sin">
        <ref cel="euxfem.0o">e&ubreve;femismo</ref>
        <ref cel="litot.0o">litoto</ref>
      </refgrp>
    </snc>
    <trd lng="en">understatement</trd>
    <trdgrp lng="fr">
      <trd>adoucissement</trd>,
      <trd>euph&eacute;misme</trd>,
      <trd>litote</trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>litot&eacute;sz</trd>,
      <trd>t&uacute;lz&oacute; <ind>kicsiny&iacute;t&eacute;s</ind></trd>
    </trdgrp>
    <trd lng="nl">understatement</trd>
    <trd lng="ru">&c_p;&c_r;&c_je;&c_u;&c_m;&c_je;&c_n;&c_mol;&c_sh;&c_je;&c_n;&c_i;&c_je;</trd>
  </drv>
</subart>
<!-- ............ tro III .......... -->
<subart>
  <dif>
    Samsenca prefikso:
  </dif>
  <snc>
    <ekz>
      <tld/>grandigi la aferon;
    </ekz>
    <ekz>
      <tld/>pezo (<ref tip="sin" cel="pez.super0o">superpezo</ref>);
    </ekz>
    <ekz>
      sen trograndigo oni povas diri, ke Esperanto estas
      almena&ubreve; 50 fojojn pli facila, ol &ccirc;ia lingvo
      natura<fnt>Z</fnt>.
    </ekz>
    <refgrp tip="sin">
      <ref cel="pas.0i">pasi</ref>,
      <ref cel="preter">preter</ref>,
      <ref cel="super">super</ref>,
      <ref cel="trans">trans</ref>.
    </refgrp>
  </snc>
</subart>
</art>
