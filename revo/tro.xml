<subart>
   <dif>
     Samsenca vortero:
   </dif>
   <drv mrk="tro.0a">
     <kap><tld/>a</kap>
     <snc>
       <dif>
         Estanta en pli ol sufi&ccirc;a kvanto a&ubreve; grado; superanta la
         &gcirc;ustan mezuron:
         <ekz>
           <tld/>a laboro;
         </ekz>
         <ekz>
           <tld/>a festeno estas veneno
           <fnt><bib>PrV</bib></fnt>
         </ekz>
       </dif>
       <refgrp tip="sin">
         <ref cel="eksces.0a">ekscesa</ref>
       </refgrp>
     </snc>
  <trdgrp lng="be">
       <trd>&c_p;&c_r;&c_a;&c_z;&c_mol;&c_m;&c_je;&c_r;&c_n;&c_y;</trd>,
       <trd>&c_z;&c_a;&c_l;&c_ib;&c_sh;&c_n;&c_ib;</trd>
     </trdgrp>
  <trdgrp lng="cs">
    <trd>nadm&ecaron;rn&yacute;</trd>,
    <trd>p&rcaron;&iacute;li&scaron;n&yacute;</trd>
  </trdgrp>
  <trd lng="es">excesivo</trd>
  <trdgrp lng="fi">
       <trd>liika</trd>,
       <trd>ylenm&auml;&auml;r&auml;inen</trd>
     </trdgrp>
  <trdgrp lng="fr">
       <trd>en <ind>trop</ind></trd>
     </trdgrp>
  <trdgrp lng="hu">
       <trd>t&uacute;l-</trd>,
       <trd>t&uacute;ls&aacute;gos</trd>
     </trdgrp>
  <trd lng="nl">overdreven</trd>
  <trd lng="ru">&c_ch;&c_r;&c_je;&c_z;&c_m;&c_je;&c_r;&c_n;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>nadmern&yacute;</trd>,
    <trd>pr&iacute;li&scaron;n&yacute;</trd>
  </trdgrp>
</drv>
   <drv mrk="tro.0e">
     <kap><tld/>e</kap>
     <snc>
       <dif>
         Estante en <tld/>a kvanto, superanta la &gcirc;ustan mezuron:
         <ekz>
           mi trovis
           du librojn <tld/>e en la kesto.
         </ekz>
       </dif>
     </snc>
  <trd lng="be">&c_p;&c_r;&c_a;&c_z;&c_mol;&c_m;&c_je;&c_r;&c_n;&c_a;</trd>
  <trd lng="cs">p&rcaron;&iacute;li&scaron;n&ecaron;</trd>
  <trd lng="es">excesivamente</trd>
  <trdgrp lng="fi">
       <trd>liikaa</trd>
     </trdgrp>
  <trdgrp lng="fr">
       <trd>excessivement</trd>,
       <trd>trop</trd>
     </trdgrp>
  <trd lng="hu">t&uacute;ls&aacute;gosan</trd>
  <trd lng="nl">te <ind>veel</ind></trd>
  <trdgrp lng="ru">
       <trd>&c_s;&c_l;&c_i;&c_sh;&c_k;&c_o;&c_m;</trd>,
       <trd>&c_ch;&c_r;&c_je;&c_z;&c_m;&c_je;&c_r;&c_n;&c_o;</trd>,
       <trd>&c_ch;&c_je;&c_r;&c_je;&c_s;&c_ch;&c_u;&c_r;</trd>
     </trdgrp>
  <trd lng="sk">pr&iacute;li&scaron;ne</trd>
</drv>
   <drv mrk="tro.0ajxo">
     <kap><tld/>a&jcirc;o</kap>
     <snc>
       <dif>
         Io superanta la &gcirc;ustan mezuron:
         <ekz>
           <tld/>a&jcirc;oj de tirano
         </ekz>
       </dif>
       <ref tip="sin" cel="eksces.0o">eksceso</ref>
     </snc>
     <trd lng="be">&c_l;&c_ib;&c_sh;&c_a;&c_k;</trd>
     <trd lng="es">exceso</trd>
     <trd lng="fi">liiallisuus</trd>
     <trdgrp lng="fr">
       <trd>exc&egrave;s</trd>,
       <trd>superflu</trd>
     </trdgrp>
     <trdgrp lng="nl">
       <trd>iets <ind>overdrevens</ind></trd>,
       <trd>exces</trd>
     </trdgrp>
     <trd lng="ru">&c_i;&c_z;&c_l;&c_i;&c_sh;&c_je;&c_k;</trd>
   </drv>
   <drv mrk="tro.0igo">
     <kap><tld/>igo</kap>
     <snc mrk="tro.0igo.hiperbolo">
       <uzo tip="fak">BELE</uzo>
       <uzo tip="fak">LIN</uzo>
       <dif>
         <ref tip="super" cel="figur.stil0o">Stilfiguro</ref>
         kiu konsistas en tio ke esprimata senco estas
         prezentata pli forte ol kutime, por emfazo, atentigo a&ubreve;
         alia efekto:
         <ekz>
           sen <tld/>igo oni povas diri, ke apud Pi-Bast &ccirc;iutage
           metis siajn tendojn tridek mil eksterlanduloj
           <fnt><bib>Far2</bib>, <lok>&Ccirc;ap. 4.</lok></fnt>;
         </ekz>
       </dif>
       <ref tip="sin" cel="hiperb.0o">hiperbolo</ref>
     </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_je;&c_r;&c_a;&c_b;&c_o;&c_l;&c_mol;&c_sh;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
    <trd>&c_p;&c_je;&c_r;&c_a;&c_b;&c_o;&c_l;&c_mol;&c_sh;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
    <trd>&c_g;&c_ib;&c_p;&c_e;&c_r;&c_b;&c_a;&c_l;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>chv&aacute;st&aacute;n&iacute;</trd>,
    <trd>nads&aacute;zka</trd>,
    <trd>p&rcaron;eh&aacute;n&ecaron;n&iacute;</trd>,
    <trd>zveli&ccaron;ov&aacute;n&iacute;</trd>
  </trdgrp>
  <trd lng="de">&Uuml;bertreibung</trd>
  <trd lng="en">overstatement</trd>
  <trdgrp lng="es">
    <trd>exageraci&oacute;n</trd>,
    <trd>hip&eacute;rbole</trd>
  </trdgrp>
  <trd lng="fi">liioittelu</trd>
  <trdgrp lng="fr">
    <trd>exag&eacute;ration</trd>,
    <trd>hyperbole</trd>
  </trdgrp>
  <trdgrp lng="hu">
       <trd>t&uacute;lz&aacute;s</trd>,
       <trd>hiperbola</trd>
     </trdgrp>
  <trd lng="nl">overdrijving</trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_r;&c_je;&c_u;&c_v;&c_je;&c_l;&c_i;&c_ch;&c_je;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_g;&c_i;&c_p;&c_je;&c_r;&c_b;&c_o;&c_l;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>nads&aacute;dzka</trd>,
    <trd>prehnanos&tcaron;</trd>,
    <trd>premr&scaron;tenos&tcaron;</trd>
  </trdgrp>
</drv>
  <drv mrk="tro.mal0">
    <kap>mal<tld/></kap>
    <snc mrk="tro.mal0.KOMUNE">
      <dif>
        En tro malgranda kvanto, tre malmulte,
        tre malabunde,
        <ref tip="vid" cel="suficx.ne0e.KOMUNE">ne sufi&ccirc;e</ref>:
        <ekz>
          la beogradanoj <klr>...</klr> havis en sia infana&gcirc;o je la 
          dispono &ccirc;ion, per kio la gepatroj regalis ilin por senkulpigi 
          sin pro mal<tld/> da tempo por la infanoj
          <fnt>
            <aut>S. &Scaron;timec</aut>,
            <vrk>Adia&ubreve;o en Beograd</vrk>,
            <lok>Kroata milita noktlibro, 1993</lok>
          </fnt>.
        </ekz>
      </dif>
    </snc>
  <trd lng="cs">m&ecaron;&rcaron;ice</trd>
  <trd lng="es">demasiado poco</trd>
  <trd lng="fr">trop peu</trd>
  <trd lng="sk">merica</trd>
</drv>

<drv mrk="tro.mal0igo">
     <kap>mal<tld/>igo</kap>
     <snc mrk="tro.mal0igo.litoto">
       <uzo tip="fak">BELE</uzo>
       <uzo tip="fak">LIN</uzo>
       <dif>
         <ref tip="super" cel="figur.stil0o">Stilfiguro</ref>
         per kiu oni plirimarkigas la sencon
         malfortigante la esprimon:
         <ekz>
           la a&ubreve;toro utiligas anka&ubreve; mal<tld/>igon komikefekte
           <fnt>
             <aut>William Auld</aut>:
             <vrk>Pa&scirc;oj al plena posedo</vrk>.
             <lok><url ref="http://www.elerno.cn/elibro/pasoj%20al%20plena%20posedo/dudeksesa.htm">Pa&scirc;o 26&#xAA;.</url></lok>
           </fnt>;
        </ekz><ekz>
           <em>M.Rauhamaa:</em> Microsoft ne estas
           bonvolorganiza&jcirc;o. &#x2010;
           <em>G.Partlow:</em> Jen la plej elstara mal<tld/>igo de
           la jaro... a&ubreve; eble de la jardeko!
           <fnt><lok>soc.culture.esperanto,
           Message-ID:
           680335c5.0109101508.2ad95a79@posting.google.com</lok></fnt>
         </ekz>
       </dif>
       <refgrp tip="sin">
         <ref cel="euxfem.0o">e&ubreve;femismo</ref>,
         <ref cel="litot.0o">litoto</ref>
       </refgrp>
     </snc>
     <trdgrp lng="be">
       <trd>&c_p;&c_je;&c_r;&c_a;&c_m;&c_je;&c_n;&c_sh;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
       <trd>&c_l;&c_ib;&c_t;&c_o;&c_t;&c_a;</trd>
     </trdgrp>
     <trd lng="en">understatement</trd>
     <trd lng="de">Untertreibung</trd>
     <trdgrp lng="es">
       <trd>atenuaci&oacute;n</trd>,
       <trd>dulcificaci&oacute;n</trd>,
       <trd>alivio</trd>,
       <trd>eufemismo</trd>,
       <trd>litotes</trd>
     </trdgrp>
     <trdgrp lng="fi">
       <trd>v&auml;h&auml;ttely</trd>,
       <trd>understatement</trd>
     </trdgrp>
     <trdgrp lng="fr">
       <trd>adoucissement</trd>,
       <trd>euph&eacute;misme</trd>,
       <trd>litote</trd>
     </trdgrp>
     <trdgrp lng="hu">
       <trd>litot&eacute;sz</trd>,
       <trd>t&uacute;lz&oacute; <ind>kicsiny&iacute;t&eacute;s</ind></trd>
     </trdgrp>
     <trd lng="nl">understatement</trd>
     <trdgrp lng="ru">
       <trd>&c_p;&c_r;&c_je;&c_u;&c_m;&c_je;&c_n;&c_mol;&c_sh;&c_je;&c_n;&c_i;&c_je;</trd>,
       <trd>&c_l;&c_i;&c_t;&c_o;&c_t;&c_a;</trd>
     </trdgrp>
   </drv>
</subart>
