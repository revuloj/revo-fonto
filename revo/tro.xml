     <trd>trop</trd>
   </trdgrp>
  <trd lng="fy">te</trd>
  <trd lng="gl">tam&#xE9;n</trd>
  <trd lng="gu">&#xAAA;&#xAA3;</trd>
  <trd lng="ha">ma</trd>
  <trd lng="hi">&#x92D;&#x940;</trd>
  <trd lng="hr">previ&#x161;e</trd>
  <trd lng="hu">t&uacute;l</trd>
