<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <rad>tabu</rad>/i
    </kap>

    <drv mrk="tabu.0i">
      <kap><tld/>i</kap>
      <snc mrk="tabu.0i.REL">
	<uzo tip="fak">REL</uzo>
	<dif>
	  Apartigi kaj <ref tip="super" cel="permes.mal0i">malpermesi</ref>
	  ion por normala, &ccirc;iutaga uzo, precipe &ccirc;ar destinante &gcirc;in
	  kiel oferon, <ref cel="konsekr.0i">konsekrante</ref> a&ubreve;
	  <ref cel="dedicx.0i.destini">dedi&ccirc;ante</ref> a&ubreve;
	  <ref cel="ofer.0i.dedicxi">oferante</ref> &gcirc;in al
	  dioj, a&ubreve; &ccirc;ar &gcirc;ia religia malpureco povas ofendi la diojn, a&ubreve;
	  &ccirc;ar la kontakto kun la profana&jcirc;oj estus dan&gcirc;era ktp:
	  <ekz>
	    la egiptoj <tld/>is la nomon de la reganta faraono.
	  </ekz>
	</dif>
      </snc>
      <rim mrk="tabu.0i.RIM">
	Speciala trajto de &leftquot;<tld/>i&rightquot; kontraste al pli &gcirc;enerala
	<ctl>malpermesi</ctl> estas &gcirc;ia eksterracia kaj absoluta
	karaktero.
	<aut>Sergio Pokrovskij</aut>
      </rim>
      <trd lng="ru">&c_t;&c_a;&c_b;&c_u;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
    </drv>

    <drv mrk="tabu.0o">
      <kap><tld/>o</kap>
      <snc mrk="tabu.0o.REL">
	<uzo tip="fak">REL</uzo>
	<dif>
	  Io <tld/>ita (<tld/>ita&jcirc;o); la ago <tld/>i (malpermeso);
	  la stato esti <tld/>ita:
	  <ekz>
	    la malpermeso de incesto estas unu el la plej
	    malnovaj <tld/>uoj
	    <fnt><bib>PIV2</bib>, <lok>p. 469 (art. &leftquot;incesto&rightquot;)</lok></fnt>;
	  </ekz><ekz>
	    en praaj religioj la nomo de la etna dio estis <tld/>o;
	  </ekz><ekz>
	    ili havas neniujn malbelegajn dietojn, <tld/>ojn a&ubreve;
	    sor&ccirc;ojn por malagrabligi kaj limigi iliajn vivojn
	    <fnt>
	      <aut>Harry Harrison, tr. William Auld</aut>:
	      <vrk>La stratoj de A&scirc;kelono</vrk>.
	    </fnt>.
	  </ekz>
	</dif>
      </snc>
      <snc mrk="tabu.0o.malpermeso.soc">
	<uzo tip="fak">FIG</uzo>
	<dif>
	  Malpermeso ion fari a&ubreve; diri pro sociaj kutimoj.
	</dif>
      </snc>
      <snc mrk="tabu.0o.itajxo.soc">
	<dif>
	  Afero kiu pro sociaj kutimoj estas malpermesata.
	</dif>
      </snc>
      <trd lng="de">Tabu</trd>
      <trd lng="en">taboo</trd>
      <trd lng="hu">tabu</trd>
      <trd lng="nl">taboe</trd>
      <trd lng="ru">&c_t;&c_a;&c_b;&c_u;</trd>
      <trd lng="sv">tabu</trd>
    </drv>

    <drv mrk="tabu.0a">
      <kap><tld/>a</kap>
      <snc>
	<dif>
	  <tld lit="T"/>ita, netu&scirc;ebla a&ubreve; malpermesita pro <tld/>o.
	</dif>
      </snc>
      <ref tip="sub" cel="sankt.0a">sankta</ref>
      <trd lng="hu">tabu-</trd>
      <trd lng="nl">taboe</trd>
      <trdgrp lng="ru">
	<trd>&c_z;&c_a;&c_p;&c_r;&c_je;&c_t;&c_n;&c_y;&c_j;</trd>,
	<trd>&c_t;&c_a;&c_b;&c_u;&c_i;&c_r;&c_o;&c_v;&c_a;&c_n;&c_n;&c_y;&c_j;</trd>
      </trdgrp>
    </drv>

    <drv mrk="tabu.0eco">
      <kap><tld/>eco</kap>
      <snc>
	<dif>
	  Teruriga karaktero de personoj a&ubreve; objektoj, kiujn oni ne
	  povas tu&scirc;i sen risko je puno a&ubreve; infekto.
	</dif>
	<refgrp tip="vid">
	  <ref cel="totem.0o">totemo</ref>.
	</refgrp>
      </snc>
      <trdgrp lng="ru">
	<trd>&c_z;&c_a;&c_p;&c_r;&c_je;&c_t;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>,
	<trd>&c_t;&c_a;&c_b;&c_u;&c_i;&c_r;&c_o;&c_v;&c_a;&c_n;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>
      </trdgrp>
    </drv>
  </art>
