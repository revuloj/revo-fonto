<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>balon</rad>/o
  <ofc>2</ofc>
</kap>
<drv mrk="balon.0o">
  <kap><tld/>o</kap>
  <snc mrk="balon.0o.ludilo">
    <dif>
      Malsolida, malpeza <ref tip="super" cel="lud.0ilo">ludilo</ref>,
      farita el ka&ubreve;&ccirc;uko, diverskolora, kolbas- a&ubreve;
      glob-forma, kiun oni plenigas per aero a&ubreve; per gaso kaj tenas per
      longa maldika &scirc;nureto.
    </dif>
    <refgrp tip="vid">
      <ref cel="pilk.0o">pilko</ref>.
    </refgrp>
    <trd lng="de">Ballon</trd>
    <trd lng="en">balloon</trd>
    <trd lng="es">bal&oacute;n</trd>
    <trdgrp lng="fr">
      <trd>ballon<klr tip="ind"> (jouet qui flotte en l'air)</klr></trd>
    </trdgrp>
    <trd lng="hu">l&eacute;gg&ouml;mb<klr tip="ind"> (j&aacute;t&eacute;k)</klr></trd>
    <trd lng="nl">ballon</trd>
    <trd lng="ru">&c_v;&c_o;&c_z;&c_d;&c_u;&c_sh;&c_n;&c_y;&c_j; &c_sh;&c_a;&c_r;&c_i;&c_k;</trd>
  </snc>
  <snc mrk="balon.0o.aerostato">
    <uzo tip="fak">AVI</uzo>
    <ref tip="dif" cel="aerost.0o">aerostato</ref>
    <trd lng="es">globo</trd>
    <trd lng="en">balloon</trd>
    <trdgrp lng="fr">
      <trd>ballon<klr tip="ind"> (a&eacute;rostat)</klr></trd>,
      <trd>a&eacute;rostat</trd>
    </trdgrp>
    <trd lng="hu">l&eacute;gg&ouml;mb<klr tip="ind"> (j&aacute;m&udblac;)</klr></trd>
    <trdgrp lng="ru">
      <trd>&c_v;&c_o;&c_z;&c_d;&c_u;&c_sh;&c_n;&c_y;&c_j; &c_sh;&c_a;&c_r;</trd>,
      <trd>&c_a;&c_e;&c_r;&c_o;&c_s;&c_t;&c_a;&c_t;</trd>,
      <trd>&c_b;&c_a;&c_l;&c_l;&c_o;&c_n;</trd>
    </trdgrp>
    <trdgrp lng="nl">
      <trd>ballon</trd>,
      <trd>luchtballon</trd>
    </trdgrp>
  </snc>
  <snc mrk="balon.0o.vazo">
    <uzo tip="fak">KEM</uzo>
    <dif>
      Vitra sferforma vazo uzata en kemio.
    </dif>
    <ref tip="sin" cel="retort.0o">retorto</ref>
    <trd lng="de">Glaskolben</trd>
    <trdgrp lng="fr">
      <trd>ballon<klr tip="ind"> (vase sph&eacute;rique)</klr></trd>
    </trdgrp>
    <trd lng="hu">lombik</trd>
    <trdgrp lng="nl">
      <trd>retort</trd>,
      <trd>kolf<klr tip="ind"> (retort)</klr></trd>
    </trdgrp>
    <trd lng="en">flask</trd>
    <trd lng="ru">&c_r;&c_je;&c_t;&c_o;&c_r;&c_t;&c_a;</trd>
  </snc>
</drv>

<drv mrk="balon.prov0o">
  <kap>prov<tld/>o</kap>
  <snc mrk="balon.prov0o.MET">
    <uzo tip="fak">MET</uzo>
    <dif>
      <tld lit="B"/>o <sncref ref="balon.0o.aerostato"/>, uzata
      por esplori la atmosferon kaj sendi mezurojn.
    </dif>
    <rim>
      Por &ccirc;i tiu senco la termino <ctl>sondo<tld/>o</ctl>
      aperas en <fnt><bib>PIV1</bib></fnt>. Estas tamen strange
      limigi <ctl>prov<tld/>o</ctl> al la nura figura senco.
    </rim>
  </snc>
  <snc mrk="balon.prov0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Eksperimento, farita por sondi ies opinion:
      <ekz>
        <ind>li flugigis prov<tld/>on</ind>
        <klr>(diris ion nur por ekscii pri la reago)</klr>
        <fnt><aut>Pilger Wouter</aut><vrk>Slango kaj &jcirc;argono</vrk><lok><url ref="http://www.geocities.com/Paris/8678/slangocx.htm">balono</url></lok></fnt>.
        <trd lng="fr">il a lanc&eacute; un <ind>ballon</ind> d'essai</trd>
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd><ind>ballon</ind>-sonde</trd>,
    <trd><ind>ballon</ind> d'essai</trd>
  </trdgrp>
</drv>
</art>
