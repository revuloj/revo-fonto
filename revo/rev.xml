<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: rev.xml,v 1.37 2017/12/20 13:10:15 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>rev</rad>/i <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="rev.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <snc mrk="rev.0i.PSI">
    <gra><vspec>x</vspec></gra>
    <dif>
      Imagi tion, kion oni forte deziras:
      <ekz>
        bona kaporalo <tld/>as esti generalo
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        tian sukceson ni ne esperis, e&ccirc; ne <tld/>is;
      </ekz>
      <ekz>
        de lia juneco li <tld/>is pri la solvado de tiu problemo.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="kastel.0o">kastelo</ref>,
      <ref cel="aer.0o">aero</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_m;&c_a;&c_r;&c_y;&c_c;&c_mol;</trd>
  <trd lng="bg">&c_m;&c_je;&c_ch;&c_t;&c_a;&c_ja;</trd>
  <trdgrp lng="cs">
    <trd>sn&iacute;t</trd>,
    <trd>tou&zcaron;it</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>tr&auml;umen</trd>,
    <trd>schw&auml;rmen</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>dream</trd>,
    <trd>daydream</trd>,
    <trd>muse</trd>,
    <trd>be in a reverie</trd>
  </trdgrp>
<trdgrp lng="it">
    <trd>sognare <klr>(a occhi aperti)</klr></trd>,
    <trd>fantasticare</trd>,
    <trd>vagheggiare</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>so&ntilde;ar <klr>(despierto)</klr></trd>,
    <trd>imaginar</trd>,
    <trd>fantasear</trd>,
    <trd>aspirar</trd>,
    <trd>anhelar</trd>
  </trdgrp>
  <trd lng="fr">r&ecirc;ver de<klr tip="amb"> (fortement
  d&eacute;sirer)</klr></trd>
  <trdgrp lng="hu">
    <trd>&aacute;br&aacute;ndozik</trd>,
    <trd>&aacute;lmodozik</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>dag<ind>dromen</ind></trd>,
    <trd>mijmeren</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>sonhar</trd>,
    <trd>devanear</trd>,
    <trd>fantasiar</trd>
  </trdgrp>
  <trd lng="ru">&c_m;&c_je;&c_ch;&c_t;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>roj&ccaron;i&tcaron;</trd>,
    <trd>sni&tcaron;</trd>
  </trdgrp>
</drv>

<drv mrk="rev.0a">
  <kap><tld/>a</kap>
  <snc mrk="rev.0a.PSI">
    <dif>
      Absorbata en dol&ccirc;a pensado:
      <ekz>
        <tld/>a rigardo
        <fnt><bib>Marta</bib></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="bg">&c_z;&c_a;&c_m;&c_je;&c_ch;&c_t;&c_a;&c_n;</trd>
  <trdgrp lng="cs">
    <trd>sniv&yacute;</trd>,
    <trd>sn&iacute;lkovsk&yacute;</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>dreamy</trd>,
    <trd>lost in thought</trd>,
    <trd>in a reverie</trd>
  </trdgrp>
  <trd lng="fr">r&ecirc;veur<klr tip="amb"> (adj.)</klr></trd>
  <trdgrp lng="hu">
    <trd>&aacute;br&aacute;ndos</trd>,
    <trd>&aacute;lmodoz&oacute;</trd>
  </trdgrp>
  <trd
  lng="ru">&c_m;&c_je;&c_ch;&c_t;&c_a;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
  <trd lng="sk">sn&iacute;vaj&uacute;ci</trd>
</drv>

<drv mrk="rev.0o">
  <kap><tld/>o</kap>
  <snc mrk="rev.0o.PSI">
    <dif>
      Imago de feli&ccirc;igaj, dezirataj aferoj:
      <ekz>
        plekti <tld/>on;
      </ekz>
      <ekz>
        fine efektivi&gcirc;is mia <tld/>o;
      </ekz>
      <ekz>
        mia <tld/>o eble estas utopia<fnt>Z</fnt>;
      </ekz>
      <ekz>
        hodia&ubreve;a <tld/>o povas fari&gcirc;i morga&ubreve;a realo;
      </ekz>
      <ekz>
        &ccirc;io apartenas ankora&ubreve; al la regno de
        <tld/>oj<fnt>Z</fnt>;
      </ekz>
      <ekz>
        li sidis dronanta en <tld/>oj<fnt>B</fnt>;
      </ekz>
      <ekz>
      mi de la plej frua infaneco fordonis min tutan al unu &ccirc;efa ideo
      kaj <tld/>o &mdash; al la <tld/>o pri la unui&gcirc;o de la
      homaro<fnt>Z</fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="utopi.0o">utopio</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_m;&c_a;&c_r;&c_a;</trd>
  <trd lng="bg">&c_m;&c_je;&c_ch;&c_t;&c_a;</trd>
  <trdgrp lng="cs">
    <trd>sen</trd>,
    <trd>touha</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>(Tag-)Traum</trd>,
    <trd>Schwarm</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>dream</trd>,
    <trd>daydream</trd>,
    <trd>reverie</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>sue&ntilde;o <klr>(aspiraci&oacute;n)</klr></trd>,
    <trd>anhelo</trd>,
    <trd>aspiraci&oacute;n</trd>,
    <trd>ilusi&oacute;n</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>sogno <klr>(aspirazione)</klr></trd>,
    <trd>fantasticheria</trd>,
    <trd>illusione</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>r&ecirc;verie</trd>,
    <trd>r&ecirc;ve<klr tip="amb"> (&eacute;veill&eacute;)</klr></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>&aacute;br&aacute;nd</trd>,
    <trd>&aacute;lom <klr tip="ind">(&aacute;br&aacute;nd)</klr></trd>
  </trdgrp>
  <trd lng="ru">&c_m;&c_je;&c_ch;&c_t;&c_a;</trd>
  <trdgrp lng="sk">
    <trd>sen</trd>,
    <trd>t&uacute;&zcaron;ba</trd>
  </trdgrp>
  <trd lng="zh">&#26790;&#24819;</trd>
</drv>

<drv mrk="rev.0ema">
  <kap><tld/>ema</kap>
  <snc mrk="rev.0ema.KOMUNE">
    <dif>
      Ema al <tld/>ado; kvaza&ubreve; mense foresta;
      montranta <tld/>an animstaton:
      <ekz>
        <tld/>emaj iom brulantaj brunaj okuloj
        <fnt>
          <aut>V. Stankievi&ccirc;</aut>,
          <vrk><url
          ref="http://eo.wikisource.org/wiki/El_la_vivo_de_esperantistoj/Teksto">
          El la vivo de esperantistoj</url></vrk>,
          <lok>1896</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="bg">&c_m;&c_je;&c_ch;&c_t;&c_a;&c_t;&c_je;&c_l;&c_je;&c_n;</trd>
  <trdgrp lng="cs">
    <trd>sniv&yacute;</trd>,
    <trd>sn&iacute;lkovsk&yacute;</trd>
  </trdgrp>
  <trd lng="es">so&ntilde;ador <klr>(despierto)</klr></trd>
  <trd lng="fr">r&ecirc;veur<klr> (adj.)</klr></trd>
  <trd lng="sk">sniv&yacute;</trd>
</drv>

<drv mrk="rev.0iga">
  <kap><tld/>iga</kap>
  <snc mrk="rev.0iga.PSI">
    <dif>
      Favoranta dol&ccirc;an, <tld/>an animstaton:
      <ekz>
        la <tld/>iga trankvileco de la pa&scirc;tejoj
        <fnt><bib>I&scirc;tar</bib>, <lok>&ccirc;apitro 1a,
        renkonto</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">vyvol&aacute;vaj&iacute;c&iacute;
  sn&ecaron;n&iacute;</trd>
  <trdgrp lng="es">
    <trd>inspirador</trd>,
    <trd>evocador</trd>,
    <trd>ilusionante</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>&eacute;vocateur<klr tip="amb"> (qui fait
    r&ecirc;ver)</klr></trd>,
    <trd>suggestif<klr tip="amb"> (qui fait r&ecirc;ver)</klr></trd>
  </trdgrp>
  <trd lng="hu">andal&iacute;t&oacute;</trd>
  <trd lng="sk">vyvol&aacute;vaj&uacute;ci snenie</trd>
</drv>

<drv mrk="rev.0ulo">
  <kap><tld/>ulo</kap>
  <snc mrk="rev.0ulo.PSI">
    <uzo tip="fak">PSI</uzo>
    <dif>
      Homo ema al <tld/>ado, eventuale ne praktikema a&ubreve;
      ne atenta al situacioj:
      <ekz>
        mi volas fari portreton de amiko, &mdash; skribis van Gogh  al
        sia 
        frato, &mdash; pentriston, <tld/>ulon, kiu laboras same, kiel
        najtingalo kantas
        <fnt><aut>J. Mura&scirc;kovskij, I. Mura&scirc;kovska</aut>,
        <vrk>Kien 
        fluas roj&#8217; Castalie?</vrk>, <lok>1984-1987</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="bg">&c_m;&c_je;&c_ch;&c_t;&c_a;&c_t;&c_je;&c_l;</trd>
  <trd lng="cs">sn&iacute;lek</trd>
  <trdgrp lng="es">
    <trd>so&ntilde;ador (persona)</trd>,
    <trd>iluso</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>sognatore<klr>(persona)</klr></trd>,
    <trd>illuso</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>r&ecirc;veur<klr> (subst.)</klr></trd>,
    <trd>t&ecirc;te-en-l'air<klr> (subst.)</klr></trd>
  </trdgrp>
  <trd lng="sk">rojko</trd>
</drv>

<drv mrk="rev.el0igi">
  <kap>el<tld/>igi</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="rev.el0igi.PSI">
    <dif>
      Sobrige remeti anta&ubreve; la realon kaj senigi je vanaj esperoj.
    </dif>
  </snc>
  <trd lng="bg">&c_r;&c_a;&c_z;&c_o;&c_ch;&c_a;&c_r;&c_o;&c_v;&c_a;&c_m;</trd>
  <trdgrp lng="cs">
    <trd>probudit ze sn&ecaron;n&iacute;</trd>,
    <trd>roz&ccaron;arovat</trd>,
    <trd>zklamat</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>disillusion</trd>,
    <trd>disappoint</trd>,
    <trd>disenchant</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>decepcionar</trd>,
    <trd>desilusionar</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>deludere</trd>,
    <trd>disincantare</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>d&eacute;tromper</trd>,
    <trd>d&eacute;sillusionner</trd>
  </trdgrp>
  <trd lng="hu">ki&aacute;br&aacute;nd&iacute;t</trd>
  <trd
  lng="ru">&c_r;&c_a;&c_z;&c_o;&c_ch;&c_a;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trd lng="sk">roz&ccaron;arova&tcaron;</trd>
</drv>

<drv mrk="rev.el0igxi">
  <kap>el<tld/>i&gcirc;i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="rev.el0igxi.PSI">
    <dif>
      Seni&gcirc;i je agrablaj, eble trompaj imagoj.
    </dif>
  </snc>
  <trd lng="bg">&c_r;&c_a;&c_z;&c_o;&c_ch;&c_a;&c_r;&c_o;&c_v;&c_a;&c_m; &c_s;&c_je;</trd>
  <trdgrp lng="en">
    <trd>become disillusioned</trd>,
    <trd>become disappointed</trd>,
    <trd>become disenchanted</trd>
  </trdgrp>
  <trd lng="es">decepcionarse</trd>
  <trdgrp lng="fr">
    <trd>se <ind>d&eacute;tromper</ind></trd>,
    <trd>perdre ses illusions</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>ki&aacute;br&aacute;ndul</trd>,
    <trd>csal&oacute;dik</trd>
  </trdgrp>
  <trd
  lng="ru">&c_r;&c_a;&c_z;&c_o;&c_ch;&c_a;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>
</drv>

<drv mrk="rev.el0igxo">
  <kap>el<tld/>i&gcirc;o,
  <var><kap><ofc>*</ofc>dis<tld/>i&gcirc;o <fnt><bib>F</bib>, <lok>Universala
  Vortaro, <url
  ref="http://www.akademio-de-esperanto.org/fundamento/universala_vortaro.html#av-5181">dis'rev'i&gcirc;'</url></lok></fnt></kap></var>,
  <var><kap>sen<tld/>i&gcirc;o</kap></var></kap>
  <snc mrk="rev.el0igxo.PSI">
    <dif>
      Dolora konstato, ke <tld/>o ne reali&gcirc;as, ne okazos:
      <ekz>
        dek ok jarojn, plenigitajn de obstina laborado de la kapo,
        malsukcesoj, dis<tld/>i&gcirc;oj
        <fnt><bib>FK</bib>, <lok>Nokto</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd
  lng="be">&c_r;&c_a;&c_s;&c_ch;&c_a;&c_r;&c_a;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>
  <trd lng="bg">&c_r;&c_a;&c_z;&c_o;&c_ch;&c_a;&c_r;&c_o;&c_v;&c_a;&c_n;&c_i;&c_je;</trd>
  <trdgrp lng="en">
    <trd>disillusionment</trd>,
    <trd>disappointment</trd>,
    <trd>disenchantment</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>delusione</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>decepci&oacute;n</trd>,
    <trd>desilusi&oacute;n</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>d&eacute;ception</trd>,
    <trd>d&eacute;sillusion</trd>
  </trdgrp>
  <trd lng="hu">ki&aacute;br&aacute;ndul&aacute;s</trd>
  <trdgrp lng="nl">
    <trd>ontgoocheling</trd>,
    <trd>teleurstelling</trd>
  </trdgrp>
  <trd
  lng="ru">&c_r;&c_a;&c_z;&c_o;&c_ch;&c_a;&c_r;&c_o;&c_v;&c_a;&c_n;&c_i;&c_je;</trd>
</drv>

<drv mrk="rev.for0i">
  <kap>for<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="rev.for0i.PSI">
    <dif>
      <tld lit="R"/>ante forgesi zorgon:
      <ekz>
        la almozulo <klr>...</klr> refre&scirc;igas sin per sukplena
        akvomelono kaj for<tld/>as sian vivon
        <fnt><bib>Fab4</bib>, <lok>historio el la dunoj</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">ukol&eacute;bat n&ecaron;koho <klr>(do
  sn&ecaron;n&iacute;)</klr></trd>
  <trd lng="en">dream away</trd>
  <trd lng="es">distraerse de</trd>
  <trd lng="fr">oublier<klr tip="amb"> (en r&ecirc;vant d'autre
  chose)</klr></trd>
  <trdgrp lng="hu">
    <trd>elfelejt <klr tip="ind">(bajt)</klr></trd>,
    <trd>megfeledkezik <klr tip="ind">(bajr&oacute;l)</klr></trd>
  </trdgrp>
  <trd lng="sk">ukol&iacute;sa&tcaron; niekoho <klr>(do
  snenia)</klr></trd>
</drv>

<drv mrk="rev.pri0i">
  <kap>pri<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="rev.pri0i.KOMUNE">
    <dif>
      <tld lit="R"/>i pri..., imagi, mense bildigi:
      <ekz>
        trinku iom da brando anta&ubreve; ol dormi kaj pri<tld/>i 
        feli&ccirc;a&jcirc;ojn
        <fnt>
          <aut>M. Ahado</aut>,
          <vrk><url ref="http://www.ipernity.com/blog/fajro38/422968">
          Ebrii&gcirc;u</url></vrk>,
          <lok>2012-10-18</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">r&ecirc;ver de</trd>
</drv>
</art>
