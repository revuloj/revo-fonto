  <rad>siest</rad>/o
  <fnt><bib>PVEF</bib></fnt>
</kap>
<drv mrk="siest.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Posttagman&gcirc;a <ref tip="super" cel="dorm.0o.ripozo">dormo</ref>:
      <ekz>
        en la sekvinta tago, kiam <nom>Wygrycz</nom> en nokta surtuto kaj pantofloj faris sian
        <tld/>on, Franjo estis &ccirc;e la kudrejo kaj Klaro kun la frato sidis &ccirc;e libroj
        kaj kajeroj, iu frapis delikate la pordon
        <fnt>
          <bib>IK</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <rim>
    La&ubreve; <fnt><bib>BL</bib></fnt>: Anka&ubreve; eblas diri <ke>tagdorm(et)o</ke>, <ke>dumtaga
    dorm(et)o</ke>, <ke>(post-)tagmeza dorm(et)o</ke>.
  </rim>

  <trd lng="be">&c_s;&c_ib;&c_je;&c_s;&c_t;&c_a;</trd>
  <trdgrp lng="ca">
    <trd>migdiada</trd>,
    <trd>sesta</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>poledn&iacute; klid</trd>,
    <trd>siesta</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Mittagsschlaf</trd>,
    <trd>Siesta</trd>
  </trdgrp>
  <trd lng="en">siesta</trd>
  <trd lng="es">siesta</trd>
  <trd lng="fr">sieste</trd>
  <trd lng="hu">szieszta</trd>
  <trdgrp lng="ja">
    <trd>&#26172;&#23517;  <pr>&#12402;&#12427;&#12397;</pr></trd>,
    <trd>&#21320;&#30561;  <pr>&#12372;&#12377;&#12356;</pr></trd>
  </trdgrp>
  <trd lng="nl">si&euml;sta</trd>
  <trdgrp lng="pl">
    <trd>drzemka</trd>,
    <trd>sjesta</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_s;&c_i;&c_je;&c_s;&c_t;&c_a;</trd>,
    <trd>&c_p;&c_o;&c_s;&c_l;&c_je;&c_o;&c_b;&c_je;&c_d;&c_je;&c_n;&c_n;&c_y;&c_j;
    &c_o;&c_t;&c_d;&c_y;&c_h;</trd>
  </trdgrp>
  <trd lng="sk">odpo&ccaron;inok <klr>(odpolud&ncaron;aj&scaron;&iacute;)</klr></trd>
  <trdgrp lng="uk">
    <trd>&c_s;&c_ib;&c_jeu;&c_s;&c_t;&c_a;</trd>,
    <trd>&c_p;&c_o;&c_o;&c_b;&c_ib;&c_d;&c_n;&c_ib;&c_j; &c_s;&c_o;&c_n;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#21320;&#30561; <pr>w&#468;shu&igrave;</pr></trd>,
    <trd>&#21320;&#20241; <pr>w&#468;xi&#363;</pr></trd>,
    <trd>&#21320;&#35258; <pr>w&#468;ji&agrave;o</pr></trd>,
    <trd>&#21320;&#35273; <pr>w&#468;ji&agrave;o</pr></trd>,
