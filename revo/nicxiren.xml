<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: nicxiren.xml,v 1.9 2024/04/17 08:27:21 revo Exp $">
<kap>
  <rad>Ni&ccirc;iren</rad>/o
</kap>
<drv mrk="nicxiren.0o">
  <kap><tld/>o</kap>
  <snc mrk="nicxiren.0o.PERS">
    <uzo tip="fak">BUD</uzo>
    <uzo tip="fak">PERS</uzo>
    <dif>
      Japana budaisma mona&hcirc;o (1222 &ndash; 1282) rekomendinta la
      lotusosutron
      kiel eminentan vojon al enlumi&gcirc;o.
    </dif>
  </snc>
  <trd lng="be">&c_N;&c_ib;&c_c;&c_ib;&c_r;&c_e;&c_n;</trd>
  <trd lng="de">Nichiren</trd>
  <trd lng="fr">Nichiren</trd>
  <trd lng="hu">Nichiren</trd>
  <trd lng="it">Nichiren</trd>
  <trd lng="nl">Nichiren Shonin</trd>
  <trd lng="pl">Nichiren Daish&omacron;nin</trd>
  <trd lng="ro">Nichiren</trd>
  <trdgrp lng="pt">
    <trd>Nitiren</trd>,
    <trd>Nichiren</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x65E5;&#x83B2; <pr>r&#xEC;li&#xE1;n</pr></trd>,
    <trd>&#x65E5;&#x84EE; <pr>r&#xEC;li&#xE1;n</pr></trd>
  </trdgrp>
</drv>

<drv mrk="nicxiren.0ismo">
  <kap><tld lit="n"/>ismo</kap>
  <snc mrk="nicxiren.0ismo.BUD">
    <uzo tip="fak">BUD</uzo>
    <dif>
      Japandevena bran&ccirc;o de budaismo inspirata de la instruoj de
      <tld/>o:
      <ekz>
        pasis rusoj kun razita kapo, kiuj apartenas al <tld lit="n"/>ismo
        <fnt><bib>HomojMan&gcirc;antaj</bib>, <lok>&leftquot;la knabino ludanta
        violon&ccirc;elon&rightquot;, p. 197a</lok></fnt>.
      </ekz>
    </dif>
    <rim mrk="nicxiren.0ismo.RIM">
      Ni&ccirc;irenismo enhavas plurajn sektojn kun diversaj nomoj
      &leftquot;ni&ccirc;iren &scirc;u&rightquot;,
      &leftquot;ni&ccirc;iren &scirc;o&scirc;u&rightquot;, &leftquot;soka gakkai&rightquot;...
    </rim>
  </snc>
  <trdgrp lng="be">
    <trd>&c_N;&c_ib;&c_c;&c_ib;&c_r;&c_e;&c_n;-&c_s;&c_ju;</trd>,
    <trd>&c_n;&c_ib;&c_c;&c_ib;&c_r;&c_e;&c_n;&c_a;&c_v;&c_a; &c_sh;&c_k;&c_o;&c_l;&c_a; &c_b;&c_u;&c_d;&c_y;&c_z;&c_m;&c_u;</trd>
  </trdgrp>
  <trd lng="hu">nichirenizmus</trd>
  <trd lng="it">buddismo <ind>Nichiren</ind></trd>
  <trd lng="nl">Nichiren-boeddhisme</trd>
  <trd lng="pl">buddyzm nichirenistyczny</trd>
  <trdgrp lng="pt">
    <trd>nitirenismo</trd>,
    <trd>nichirenismo</trd>
  </trdgrp>
  <trd lng="ro">Nichiren <klr>(budism)</klr></trd>
</drv>
</art>

