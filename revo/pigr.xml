<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>pigr</rad>/a <fnt>Z</fnt>
</kap>

<drv mrk="pigr.0a">
  <kap><tld/>a</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="pigr.0a.KOMUNE">
    <ref tip="dif" cel="dilige.mal0a">maldiligenta</ref>
    <ekz>
      li estas <tld/>a kaj rifuzas labori kaj konstante &gcirc;enas min
      <fnt>
      <aut>L. Frank Baum, trad. de Donald Broadribb</aut>,
      <vrk>Tiktoko de Oz</vrk>
      </fnt>.
    </ekz>
  </snc>
  <trdgrp lng="be">
    <trd>&c_l;&c_ja;&c_n;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_g;&c_u;&c_l;&c_mol;&c_t;&c_a;&c_ja;&c_v;&c_a;&c_t;&c_y;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>faul</trd>,
    <trd>tr&auml;ge</trd>,
    <trd>arbeitsscheu</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>lazy</trd>,
    <trd>indolent</trd>,
    <trd>slothful</trd>,
    <trd>slow-going</trd>,
    <trd>work-shy</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>harag&aacute;n</trd>,
    <trd>perezoso</trd>,
    <trd>vago</trd>
  </trdgrp>
  <trdgrp lng="fa">
    <trd>&a_t;&a_n;&a_b;&a_l;</trd>,
    <trd>&f_k;&a_A;&a_h;&a_l;</trd>,
    <trd>&a_t;&a_n;&zwnj;&f_p;&a_r;&a_w;&a_r;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>indolent</trd>,
    <trd>nonchalant</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>lusta</trd>,
    <trd>henye</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>pigro</trd>,
    <trd>indolente</trd>
  </trdgrp>
  <trd lng="nl">lui</trd>
  <trdgrp lng="pl">
    <trd>nonszalancki</trd>,
    <trd>leniwy</trd>,
    <trd>pr&oacute;&zdot;niaczy</trd>
  </trdgrp>
  <trd lng="pt">pregui&ccedil;oso</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_i;&c_v;&c_y;&c_j;</trd>
</drv>

<drv mrk="pigr.0i">
  <kap><tld/>i</kap>
  <gra><vspec>x</vspec></gra>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="pigr.0i.KOMUNE">
    <dif>
      <ref tip="dif" cel="dilige.mal0i">Maldiligenti</ref>:
      <ekz>
        li tuj krias, &leftquot;&ccirc;u oni pagas vin, por ke vi
        <tld/>u a&ubreve; por
        kio?&rightquot;
        <fnt><bib>Mortul&Scirc;ip</bib>, <lok>dua libro, &ccirc;apitro
        43a</lok></fnt>;
      </ekz>
      <ekz>
        mi ja <tld/>is fosi en vortaroj
        <fnt><aut>Jurij Finkel</aut>, <vrk>Re: Estonta patro
        demandas</vrk>, <lok>soc.culture.esperanto,
        2000-07-13</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">faul sein</trd>
  <trd lng="fa">&a_t;&a_n;&a_b;&a_l;&f_y; &f_k;&a_r;&a_d;&a_n;</trd>
  <trdgrp lng="es">
    <trd>haraganear</trd>,
    <trd>holgazanear</trd>,
    <trd>vagear</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>se <ind>laisser vivre</ind></trd>,
    <trd>paresser</trd>
  </trdgrp>
  <trd lng="hu">lust&aacute;lkodik</trd>
  <trd lng="nl"><ind>lui</ind> zijn</trd>
  <trdgrp lng="pl">
    <trd>leni&cacute; si&eogonek;</trd>,
    <trd>pr&oacute;&zdot;niaczy&cacute;</trd>,
    <trd>obija&cacute; si&eogonek;</trd>
  </trdgrp>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
</drv>

<drv mrk="pigr.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="pigr.0o.KOMUNE">
    <ref tip="dif" cel="dilige.mal0o">maldiligento</ref>
    <ekz>
      Pro nura <tld/>o kaj pro malemo /
      mi faras ja nenion, min mankas vol'
      <fnt><aut>Bertilo Wennergren</aut>,
      <vrk>bluso en rubuj'</vrk></fnt>.
    </ekz>
  </snc>
  <trd lng="be">&c_l;&c_ja;&c_n;&c_o;&c_t;&c_a;</trd>
  <trdgrp lng="de">
    <trd>Faulheit</trd>,
    <trd>Tr&auml;gheit</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>laziness</trd>,
    <trd>sloth</trd>,
    <trd>idleness</trd>,
    <trd>indolence</trd>,
    <trd>laze</trd>,
    <trd>slothfulness</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>holgazaner&iacute;a</trd>,
    <trd>pereza</trd>,
  </trdgrp>
  <trdgrp lng="fr">
    <trd>indolence</trd>,
    <trd>nonchalance</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>lustas&aacute;g</trd>,
    <trd>henyes&eacute;g</trd>
  </trdgrp>
  <trd lng="nl">luiheid</trd>
  <trdgrp lng="pl">
    <trd>nonszalancja</trd>,
    <trd>lenistwo</trd>,
    <trd>pr&oacute;&zdot;niactwo</trd>
  </trdgrp>
  <trd lng="pt">pregui&ccedil;a</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_mol;</trd>
</drv>

<drv mrk="pigr.0ulo">
  <kap><tld/>ulo</kap>
  <gra><vspec>ntr</vspec></gra>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="pigr.0ulo.KOMUNE">
    <ref tip="dif" cel="dilige.mal0ulo">maldiligentulo</ref>
    <ekz>
      jen &gcirc;uste Potifar: malzorgema <tld/>ulo, &ccirc;iam preta
      &scirc;ar&gcirc;i iun
      alian
      per siaj propraj teda&jcirc;oj
      <fnt><bib>SkandalJozef</bib>, <lok>konfeso de la
      Potifar-edzino</lok></fnt>.
    </ekz>
  </snc>
  <trd lng="fr">paresseux<klr tip="amb"> (subst.)</klr></trd>
  <trdgrp lng="de">
    <trd>Faulpelz</trd>,
    <trd>Faulenzer</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>luiwammes</trd>,
    <trd>luiaard</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>le&nacute;</trd>,
    <trd>pr&oacute;&zdot;niak</trd>,
    <trd>obibok</trd>,
    <trd>wa&lstroke;ko&nacute;</trd>,
    <trd>nygus</trd>
  </trdgrp>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_t;&c_ja;&c_j;</trd>
</drv>
</art>
