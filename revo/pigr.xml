<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap><rad>pigr</rad>/a <fnt>Z</fnt></kap>
<drv mrk="pigr.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      <ref tip="sin" cel="labor.mal0ema">Mallaborema</ref>,
      malpenema,
      <ref tip="sin" cel="vigl.mal0a">malvigla</ref>:
      <ekz>
        Li estas <tld/>a kaj rifuzas labori kaj konstante &gcirc;enas min.
        <fnt><aut>L. Frank Baum, tr. de Donald Broadribb</aut>:
        <vrk>Tiktoko de Oz</vrk></fnt>
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="en">
    <trd>lazy</trd>,
    <trd>indolent</trd>,
    <trd>slothful</trd>,
    <trd>slow-going</trd>,
    <trd>work-shy</trd>
  </trdgrp>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_i;&c_v;&c_y;&c_j;</trd>
</drv>

<drv mrk="pigr.0o">
  <kap><tld/>(ec)o</kap>
  <snc>
    <dif>
      Mallaboremo, malpenemo, malvigleco:
      <ekz>
        Pro nura <tld/>o kaj pro malemo /
        mi faras ja nenion, min mankas vol'
        <fnt><aut>Bertilo Wennergren</aut>:
        <vrk>Bluso en rubuj'</vrk></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="en">
    <trd>sloth</trd>,
    <trd>idleness</trd>,
    <trd>indolence</trd>
    <trd>laze</trd>,
    <trd>slothfulness</trd>
  </trdgrp>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_mol;</trd>
</drv>
</art>
