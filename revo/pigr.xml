<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap><rad>pigr</rad>/a <fnt>Z</fnt></kap>
<drv mrk="pigr.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      <ref tip="sin" cel="labor.mal0ema">Mallaborema</ref>,
      malpenema,
      <ref tip="sin" cel="vigl.mal0a">malvigla</ref>:
      <ekz>
        Li estas <tld/>a kaj rifuzas labori kaj konstante &gcirc;enas min.
        <fnt><aut>L. Frank Baum, tr. de Donald Broadribb</aut>:
        <vrk>Tiktoko de Oz</vrk></fnt>
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>faul</trd>,
    <trd>tr&auml;ge</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>lazy</trd>,
    <trd>indolent</trd>,
    <trd>slothful</trd>,
    <trd>slow-going</trd>,
    <trd>work-shy</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>harag&aacute;n</trd>,
    <trd>haragana</trd>,
    <trd>perezoso</trd>,
    <trd>perezosa</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>lusta</trd>,
    <trd>henye</trd>
  </trdgrp>
  <trd lng="nl">lui</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_i;&c_v;&c_y;&c_j;</trd>
</drv>

<drv mrk="pigr.0o">
  <kap><tld/>(ec)o</kap>
  <snc>
    <dif>
      Mallaboremo, malpenemo, malvigleco:
      <ekz>
        Pro nura <tld/>o kaj pro malemo /
        mi faras ja nenion, min mankas vol'
        <fnt><aut>Bertilo Wennergren</aut>:
        <vrk>Bluso en rubuj'</vrk></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Faulheit</trd>,
    <trd>Tr&auml;gheit</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>laziness</trd>,
    <trd>sloth</trd>,
    <trd>idleness</trd>,
    <trd>indolence</trd>,
    <trd>laze</trd>,
    <trd>slothfulness</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>holgazaner&iacute;a</trd>,
    <trd>pereza</trd>,
  </trdgrp>  
  <trdgrp lng="hu">
    <trd>lustas&aacute;g</trd>,
    <trd>henyes&eacute;g</trd>
  </trdgrp>
  <trd lng="nl">luiheid</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_mol;</trd>
</drv>
</art>
