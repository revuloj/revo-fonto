<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>pigr</rad>/a <fnt>Z</fnt>
</kap>
<drv mrk="pigr.0a">
  <kap><tld/>a</kap>
  <uzo tip="stl">RAR</uzo>
  <snc>
      <ref tip="dif" cel="dilige.mal0a">maldiligenta</ref>
      <ekz>
        li estas <tld/>a kaj rifuzas labori kaj konstante &gcirc;enas min
        <fnt>
        <aut>L. Frank Baum, tr. de Donald Broadribb</aut>:
        <vrk>Tiktoko de Oz</vrk>
        </fnt>.
      </ekz>
  </snc>
  <trdgrp lng="be">
    <trd>&c_l;&c_ja;&c_n;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_g;&c_u;&c_l;&c_mol;&c_t;&c_a;&c_ja;&c_v;&c_a;&c_t;&c_y;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>faul</trd>,
    <trd>tr&auml;ge</trd>,
    <trd>arbeitsscheu</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>lazy</trd>,
    <trd>indolent</trd>,
    <trd>slothful</trd>,
    <trd>slow-going</trd>,
    <trd>work-shy</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>harag&aacute;n</trd>,
    <trd>haragana</trd>,
    <trd>perezoso</trd>,
    <trd>perezosa</trd>,
    <trd>vago</trd>
  </trdgrp>
  <trd lng="fr">paresseux</trd>
  <trdgrp lng="hu">
    <trd>lusta</trd>,
    <trd>henye</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>pigro</trd>,
    <trd>indolente</trd>
  </trdgrp>
  <trd lng="nl">lui</trd>
  <trd lng="pt">pregui&ccedil;oso</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_i;&c_v;&c_y;&c_j;</trd>
</drv>

<drv mrk="pigr.0o">
  <kap><tld/>(ec)o</kap>
  <uzo tip="stl">RAR</uzo>
  <snc>
    <dif>
      = <ref tip="dif" cel="dilige.mal0o">Maldiligento</ref>:
      <ekz>
        Pro nura <tld/>o kaj pro malemo /
        mi faras ja nenion, min mankas vol'
        <fnt><aut>Bertilo Wennergren</aut>:
        <vrk>Bluso en rubuj'</vrk></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_l;&c_ja;&c_n;&c_o;&c_t;&c_a;</trd>
  <trdgrp lng="de">
    <trd>Faulheit</trd>,
    <trd>Tr&auml;gheit</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>laziness</trd>,
    <trd>sloth</trd>,
    <trd>idleness</trd>,
    <trd>indolence</trd>,
    <trd>laze</trd>,
    <trd>slothfulness</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>holgazaner&iacute;a</trd>,
    <trd>pereza</trd>,
  </trdgrp>
  <trd lng="fr">paresse</trd>
  <trdgrp lng="hu">
    <trd>lustas&aacute;g</trd>,
    <trd>henyes&eacute;g</trd>
  </trdgrp>
  <trd lng="nl">luiheid</trd>
  <trd lng="pt">pregui&ccedil;a</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_mol;</trd>
</drv>
</art>
