<vortaro>
<art mrk="$Id: pigr.xml,v 1.39 2023/09/28 06:32:05 revo Exp $">
<kap>
  <rad>pigr</rad>/a
</kap>

<drv mrk="pigr.0a">
  <kap><tld/>a</kap>
  <snc mrk="pigr.0a.KOMUNE">
    <dif>
      <ref tip="dif" cel="dilige.mal0a">Maldiligenta</ref>:
      <ekz>
        li estas <tld/>a kaj rifuzas labori kaj konstante &gcirc;enas min
        <fnt>
        <aut>L. Frank Baum, trad. de Donald Broadribb</aut>,
        <vrk>Tiktoko de Oz</vrk>
        </fnt>;
      </ekz>
      <ekz>
        la pordo subite knaris, malfermi&gcirc;is kaj enlasis iun homon, li
        <tld/>e sin
        demandis: &leftquot;&ccirc;u virino?&rightquot;
        <fnt>
          <aut>Konstanten Krysakov</aut>
          <vrk><url ref="&Monato;/2000/006805.php">Kota akvo</url></vrk>
          <bib>Monato</bib>
          <lok>2000/03, p. 28</lok>
          </fnt>;
      </ekz>
      <ekz>
        mi tro <tld/>as por pa&scirc;i, dum pluva posttagmezo, al alia
        konstrua&jcirc;o
        <fnt>
          <bib>Monato</bib>
          <aut>Paul Gubbins</aut>
          <vrk><url ref="&Monato;/2012/010621.php">Montriloj de la tempoj</url></vrk>
          <lok>2012</lok>
        </fnt>;
      </ekz>
      <ekz>
        se ni renkontas &ccirc;iam kaj nur vidpunktojn egalajn al niaj
        propraj, tio senaverte
        kondukas al <tld/>i&gcirc;o-febli&gcirc;o-dogmi&gcirc;o de nia menso
        <fnt>
          <bib>Monato</bib>
          <aut>Filippo Franceschi</aut>
          <vrk><url ref="&Monato;/2005/008549.php">Altnivela kultur-revuo esperantlingva</url></vrk>
          <lok>2005</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="pigr.0a.etoso">
    <dif>
      Etoso ripoziga, malvigliga:
      <ekz>
        ni amba&ubreve; &scirc;atis <klr>[&#8230;]</klr> la dol&ccirc;an babiladon dum la
        <tld/>aj someraj
        anta&ubreve;vesperoj
        <fnt>
          <aut>Julian Modest</aut>
            <vrk><url ref="&Monato;/2001/007140.html">Vetiha</url></vrk>
            <bib>Monato</bib>
            <lok>2001/02, p. 26</lok>
          </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_l;&c_ja;&c_n;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_g;&c_u;&c_l;&c_mol;&c_t;&c_a;&c_ja;&c_v;&c_a;&c_t;&c_y;</trd>
  </trdgrp>
  <trd lng="bo">&#xF49;&#xF7C;&#xF56;&#xF0B;&#xF51;&#xF7C;&#xF0B;</trd>
  <trd lng="cs">l&iacute;n&yacute;</trd>
  <trdgrp lng="de">
    <trd>faul</trd>,
    <trd>tr&auml;ge</trd>,
    <trd>arbeitsscheu</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>lazy</trd>,
    <trd>indolent</trd>,
    <trd>slothful</trd>,
    <trd>slow-going</trd>,
    <trd>work-shy</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>harag&aacute;n</trd>,
    <trd>perezoso</trd>,
    <trd>vago</trd>
  </trdgrp>
  <trdgrp lng="fa">
    <trd>&a_t;&a_n;&a_b;&a_l;</trd>,
    <trd>&f_k;&a_A;&a_h;&a_l;</trd>,
    <trd>&a_t;&a_n;&#8204;&f_p;&a_r;&a_w;&a_r;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>indolent</trd>,
    <trd>nonchalant</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>lusta</trd>,
    <trd>henye</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>pigro</trd>,
    <trd>indolente</trd>
  </trdgrp>
  <trd lng="nl">lui</trd>
  <trdgrp lng="pl">
    <trd>nonszalancki</trd>,
    <trd>leniwy</trd>,
    <trd>pr&oacute;&zdot;niaczy</trd>
  </trdgrp>
  <trd lng="pt">pregui&ccedil;oso</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_i;&c_v;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>leniv&yacute;</trd>,
    <trd>z&aacute;ha&lcaron;&ccaron;iv&yacute;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x43B;&c_je;&c_d;&c_a;&c_ch;&c_i;&c_j;</trd>,
    <trd>&#x43B;&c_ib;&#x43D;&c_i;&c_v;&c_i;&c_j;</trd>
  </trdgrp>
</drv>

<drv mrk="pigr.0i">
  <kap><tld/>i</kap>
  <gra><vspec>x</vspec></gra>
  <snc mrk="pigr.0i.KOMUNE">
    <dif>
      <ref tip="dif" cel="dilige.mal0i">Maldiligenti</ref>:
      <ekz>
        li tuj krias, &leftquot;&ccirc;u oni pagas vin, por ke vi
        <tld/>u a&ubreve; por
        kio?&rightquot;
        <fnt><bib>Mortul&Scirc;ip</bib>, <lok>dua libro, &ccirc;apitro
        43a</lok></fnt>;
      </ekz>
      <ekz>
        mi ja <tld/>is fosi en vortaroj
        <fnt><aut>Jurij Finkel</aut>, <vrk>Re: Estonta patro
        demandas</vrk>, <lok>soc.culture.esperanto,
        2000-07-13</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_l;&c_je;&c_n;&c_a;&c_v;&c_a;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_g;&c_u;&c_l;&c_mol;&c_t;&c_a;&c_ib;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="cs">b&yacute;t l&iacute;n&yacute;</trd>
  <trd lng="de">faul sein</trd>
  <trdgrp lng="es">
    <trd>haraganear</trd>,
    <trd>holgazanear</trd>,
    <trd>vagear</trd>
  </trdgrp>
  <trd lng="fa">&a_t;&a_n;&a_b;&a_l;&f_y; &f_k;&a_r;&a_d;&a_n;</trd>
  <trdgrp lng="fr">
    <trd>se <ind>laisser vivre</ind></trd>,
    <trd>paresser</trd>
  </trdgrp>
  <trd lng="hu">lust&aacute;lkodik</trd>
  <trd lng="nl"><ind>lui</ind> zijn</trd>
  <trdgrp lng="pl">
    <trd>leni&cacute; si&eogonek;</trd>,
    <trd>pr&oacute;&zdot;niaczy&cacute;</trd>,
    <trd>obija&cacute; si&eogonek;</trd>
  </trdgrp>
  <trd lng="pt">ter pregui&ccedil;a</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
  <trd lng="sk">by&tcaron; leniv&yacute;</trd>
</drv>

<drv mrk="pigr.0o">
  <kap><tld/>o, <var><kap><tld/>eco</kap></var></kap>
  <snc mrk="pigr.0o.KOMUNE">
    <dif>
      <ref tip="dif" cel="dilige.mal0o">Maldiligento</ref>:
      <ekz>
        pro nura <tld/>o kaj pro malemo /
        mi faras ja nenion, min mankas vol'
        <fnt><aut>Bertilo Wennergren</aut>,
        <vrk>bluso en rubuj'</vrk></fnt>;
      </ekz>
      <ekz>
        la&ubreve; lia pensoskemo anka&ubreve; burokratismo, same kiel <tld/>eco,
        estas malnatura
        <fnt>
          <bib>Monato</bib>
          <aut>Donald Broadribb</aut>
          <vrk><url ref="&Monato;/2005/008649.php">Utopia verko dekna&ubreve;jarcenta</url></vrk>
          <lok>2005</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_l;&c_ja;&c_n;&c_o;&c_t;&c_a;</trd>
  <trd lng="cs">lenost</trd>
  <trdgrp lng="de">
    <trd>Faulheit</trd>,
    <trd>Tr&auml;gheit</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>laziness</trd>,
    <trd>sloth</trd>,
    <trd>idleness</trd>,
    <trd>indolence</trd>,
    <trd>laze</trd>,
    <trd>slothfulness</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>holgazaner&iacute;a</trd>,
    <trd>pereza</trd>,
  </trdgrp>
  <trdgrp lng="fr">
    <trd>indolence</trd>,
    <trd>nonchalance</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>lustas&aacute;g</trd>,
    <trd>henyes&eacute;g</trd>
  </trdgrp>
  <trd lng="nl">luiheid</trd>
  <trdgrp lng="pl">
    <trd>nonszalancja</trd>,
    <trd>lenistwo</trd>,
    <trd>pr&oacute;&zdot;niactwo</trd>
  </trdgrp>
  <trd lng="pt">pregui&ccedil;a</trd>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_mol;</trd>
  <trd lng="sk">lenivos&tcaron;</trd>
  <trdgrp lng="uk">
    <trd>&#x43B;&c_ib;&#x43D;&#x44C;</trd>,
    <trd>&#x43B;&c_ib;&#x43D;&#x43E;&c_shch;&c_ib;</trd>
  </trdgrp>
</drv>

<drv mrk="pigr.0ulo">
  <kap><tld/>ulo</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="pigr.0ulo.KOMUNE">
    <dif>
      <ref tip="dif" cel="dilige.mal0ulo">Maldiligentulo</ref>:
      <ekz>
        jen &gcirc;uste <nom>Potifar</nom>: malzorgema <tld/>ulo, &ccirc;iam preta
        &scirc;ar&gcirc;i iun alian per siaj propraj teda&jcirc;oj
        <fnt><bib>SkandalJozef</bib>, <lok>konfeso de la
        Potifar-edzino</lok></fnt>;
      </ekz>
      <ekz>
        mezepoka hontotintileto, kiun <tld/>ulo devis kunporti pendigita
        anta&ubreve; la frunto
        <fnt>
          <aut>Saliko</aut>
            <vrk><url ref="&Monato;/2001/007297.html">Kolekti sonorilojn</url></vrk>
            <bib>Monato</bib>
            <lok>2001/02, p. 24</lok>
          </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_g;&c_u;&c_l;&c_mol;&c_t;&c_a;&c_j;</trd>,
    <trd>&c_l;&c_o;&c_r;&c_t;&c_a;</trd>,
    <trd>&c_a;&c_b;&c_ib;&c_b;&c_o;&c_k;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>fl&aacute;ka&ccaron;</trd>,
    <trd>zahale&ccaron;</trd>,
    <trd>zah&aacute;l&ccaron;ivec</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Faulpelz</trd>,
    <trd>Faulenzer</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>holgaz&aacute;n</trd>,
    <trd>perezoso</trd>,
    <trd>vago</trd>
  </trdgrp>
  <trd lng="fr">paresseux<klr tip="amb"> (subst.)</klr></trd>
  <trdgrp lng="nl">
    <trd>luiwammes</trd>,
    <trd>luiaard</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>le&nacute;</trd>,
    <trd>pr&oacute;&zdot;niak</trd>,
    <trd>obibok</trd>,
    <trd>wa&lstroke;ko&nacute;</trd>,
    <trd>nygus</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>indolente</trd>
    <trd>mandri&atilde;o</trd>
    <trd>pregui&ccedil;oso</trd>
  </trdgrp>
  <trd lng="ru">&c_l;&c_je;&c_n;&c_t;&c_ja;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>fl&aacute;ka&ccaron;</trd>,
    <trd>zah&aacute;&lcaron;a&ccaron;</trd>
  </trdgrp>
</drv>
</art>
