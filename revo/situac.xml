<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>*</ofc>
      <rad>situaci</rad>/o
    </kap>
    <drv mrk="situac.0o">
      <kap><ofc>*</ofc><tld/>o</kap>
      <snc mrk="situac.0o.cirkonstancaro">
        <dif>
          Tuto da <ref tip="prt" cel="kondicx.0o">kondi&ccirc;oj</ref> kaj 
          <ref tip="prt" cel="cirkonstanc.0o">cirkonstancoj</ref>, en
          kiuj iu trovi&gcirc;as:
          <ekz>
            li klare sentis la dan&gcirc;eron de sia <tld/>o, ke li tuj &jcirc;uris 
            <klr>[...]</klr>, ke li neniam plu trinkos tro multe da 
            vino<fnt><bib>Far2</bib>, <lok>&ccirc;ap. 15</lok></fnt>;
          </ekz>
          <ekz>
            mi trovi&gcirc;as en la plej brila <tld/>o<fnt><bib>Fab2</bib>,
            <lok>La ombro</lok></fnt>;
          </ekz>         
          <ekz>
            la mastro mortis, la mastrino trovi&gcirc;is en premita
            <tld/>o<fnt><bib>Fab3</bib>, <lok>Juda knabino</lok></fnt>;
          </ekz><ekz>
            prezenti <klr>[...]</klr>  
            <tld/>on en <klr>[...]</klr> nigra
            koloro<fnt><bib>Fab2</bib>, <lok>Malnova domo</lok></fnt>;
          </ekz>
          <ekz>          
            la galo&scirc;oj de feli&ccirc;o metis lin en tiun teruran situacion kaj
            ne venis al li la ideo ekdeziri sian 
            liberi&gcirc;on<fnt><bib>Fab1</bib>, <lok>Galo&scirc;oj de 
            feli&ccirc;o</lok></fnt>;
          </ekz>
          <ekz>
            esti en <tld/>o sen eliro<fnt><bib>PrV</bib></fnt>;
          </ekz><ekz>
            adapti&gcirc;i al nova <tld/>o;
          </ekz><ekz>
            mastri, savi la <tld/>on.
          </ekz>
        </dif>
        <trdgrp lng="hu">
          <trd>helyzet</trd>,
          <trd>szitu&aacute;ci&oacute;</trd>
        </trdgrp>
        <trd lng="ru">&c_s;&c_i;&c_t;&c_u;&c_a;&c_c;&c_i;&c_ja;</trd>
      </snc>
      <snc mrk="situac.0o.rango">
        <dif>
          Ies pozicio en la socia skalo:
          <ekz>
            vi atingos honoron 
            kaj altan <tld/>on<fnt><bib>Fab2</bib>, 
            <lok>Ne&gcirc;a re&gcirc;ino</lok></fnt>;
          </ekz>
          <ekz>
           kia estis lia profesio, lia <tld/>o en
           la socio<fnt><bib>Fab3</bib>, <lok>Bona humoro</lok></fnt>;
          </ekz>
          <ekz>
           profiti la <tld/>on de la princa 
           amatino<fnt><bib>Far1</bib>, <lok>&ccirc;ap. 16</lok></fnt>.
          </ekz>
        </dif>
        <refgrp tip="sub">
          <ref cel="posten.0o">posteno</ref>,
          <ref cel="pozici.0o">pozicio</ref>,
          <ref cel="ofic.0o">ofico</ref>,
          <ref cel="rang.0o">rango</ref>,
          <ref cel="stat.0o.rango">stato</ref>
        </refgrp>
        <trd lng="hu"><klr>t&aacute;rsadalmi </klr>helyzet</trd>        
        <trd lng="ru">&c_o;&c_b;&c_shch;&c_je;&c_s;&c_t;&c_v;&c_je;&c_n;&c_n;&c_o;&c_je;
        <ind>&c_p;&c_o;&c_l;&c_o;&c_zh;&c_je;&c_n;&c_i;&c_je;</ind></trd>
      </snc>
      <snc mrk="situac.0o.situo">
        <dif>
          <ref tip="dif" cel="situ.0o">Situo</ref>:
          <ekz>
             &gcirc;i havas belan situacion &ccirc;e la rivero 
             Neckar<fnt><bib>Fab4</bib>, <lok>Malnova pre&gcirc;eja 
             sonorilo</lok></fnt>.
          </ekz>
        </dif>
        <trd lng="hu">fekv&eacute;s</trd>        
        <trd lng="ru">&c_p;&c_o;&c_l;&c_o;&c_zh;&c_je;&c_n;&c_i;&c_je;</trd>
      </snc>
      <trdgrp lng="be">
        <trd>&c_s;&c_y;&c_t;&c_u;&c_a;&c_c;&c_y;&c_ja;</trd>,
        <trd>&c_s;&c_t;&c_a;&c_n;&c_o;&c_v;&c_ib;&c_sh;&c_ch;&c_a;</trd>
      </trdgrp>
      <trd lng="bg">&c_s;&c_i;&c_t;&c_u;&c_a;&c_c;&c_i;&c_ja;</trd>
      <trdgrp lng="de">
         <trd>Lage</trd>,
         <trd>Situation</trd>
      </trdgrp>
      <trd lng="en">situation</trd>
      <trd lng="es">situaci&oacute;n</trd>
      <trdgrp lng="nl">
        <trd>situatie</trd>,
        <trd>toestand</trd>
      </trdgrp>
    </drv>
    <drv mrk="situac.0i">
      <kap><tld/>i</kap>
      <gra><vspec>ntr</vspec></gra>
      <snc>
        <dif>
          Esti en iu <tld/>o.
        </dif>
      </snc>
      <trdgrp lng="hu">
        <trd><klr tip="amb">(vmilyen)</klr> helyzetben van</trd>,
        <trd><klr tip="amb">(vmilyen)</klr> poz&iacute;ci&oacute;ban van</trd>
        <trd>fekszik <klr tip="amb">(f&ouml;ldrajzilag)</klr> </trd>
      </trdgrp>
      <adm>
        &Ccirc;u temas pri &leftquot;situi&rightquot;?
        <aut>Sergio</aut>
      </adm>
    </drv>
  </art>
