<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: katehx2.xml,v 1.19 2019/12/26 11:10:14 revo Exp $">
<kap>
  <ofc>3</ofc><rad>kate&hcirc;iz</rad>/i,
  <var><kap><ofc>3</ofc><rad>katekiz</rad>/i <fnt><bib>PV</bib></fnt></kap></var>
</kap>

<drv mrk="katehx2.0i">
  <kap><ofc>3</ofc><tld/>i, <var><kap><ofc>3</ofc>katekizi</kap></var></kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="katehx2.0i.REL">
  <uzo tip="fak">REL</uzo>
    <dif>
      <ref tip="super" cel="instru.0i">Instrui</ref> la religiajn
      elementajn principojn:
      <ekz>
        la vorton <tld/>i, uzitan en la vortaro <nom>O'Connor</nom>, mi trovas tute
        bona, &ccirc;ar &gcirc;i estas internacia
        <fnt><bib>LR</bib></fnt>;
      </ekz>  
      <ekz>
        oni katekizis nin en la grandega, tri-nava katedralo
        <fnt><aut>B. Vaha</aut>, <vrk>Adolesko</vrk>, 
        <lok>1987</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_t;&c_e;&c_h;&c_ib;&c_z;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trd lng="ca">catequitzar</trd>
  <trd lng="en">catechize</trd>
  <trd lng="es">catequizar<klr> (instruir en la doctrina de la fe
  cat&oacute;lica)</klr></trd>
  <trdgrp lng="fr">
    <trd>cat&eacute;chiser</trd>,
    <trd>faire le <ind>cat&eacute;chisme</ind></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>hittant tan&iacute;t</trd>,
    <trd>katekiz&aacute;l</trd>
  </trdgrp>
  <trd lng="nl">catechiseren</trd>
  <trd lng="pl">katechizowa&cacute;</trd>     
  <trd lng="ro">catehiza</trd>
  <trd lng="ru">&c_k;&c_a;&c_t;&c_je;&c_h;&c_i;&c_z;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
</drv>

<drv mrk="katehx2.0o">
  <kap><tld/>o, <var><kap>katekizo</kap></var></kap>
  <snc mrk="katehx2.0o.REL">
  <uzo tip="fak">REL</uzo>
    <dif>
      Instruado pri la bazoj de <ref tip="malprt" cel="religi.0o">religio</ref>:
      <ekz>
        &leftquot;<ref cel="katehx.0o.REL">kate&hcirc;ismo</ref>&rightquot; estas io alia ol &leftquot;<tld/>o&rightquot;
        <fnt>
          <bib>LR</bib>
          <lok>2. Vortuzo</lok>
        </fnt>;
      </ekz>
      <ekz>
        la unua parolo uzata de la katekizo estas la Sankta Skribo kaj la Kredkonfeso
        <fnt>
          <vrk><url ref="https://www.esperokatolika.org/ek19761980/ek1978_08.htm"
              >Espero Katolika - 1978.08</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        la katekizo devas instigi al respekto kaj komprenemo, kaj evoluigi konduton de
        a&ubreve;skultado
        <fnt>
          <vrk><url ref="https://www.esperokatolika.org/ek19761980/ek1979_02.htm"
              >Espero Katolika - 1979.02</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="ca">
    <trd>catequesi</trd>,
    <trd>catecisme</trd>
  </trdgrp>
  <trd lng="de">Katechese</trd>
  <trd lng="es">catequesis</trd>
  <trdgrp lng="fr">
    <trd>cat&eacute;chisation</trd>,
    <trd>cat&eacute;chisme<klr tip="ind"> (enseignement)</klr></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>hittantan&iacute;t&aacute;s</trd>,
    <trd>katekiz&aacute;l&aacute;s</trd>
  </trdgrp>
  <trd lng="nl">catechese</trd>
  <trdgrp lng="pl">
    <trd>katecheza</trd>,
    <trd>religia<klr> (przedmiot)</klr></trd>
  </trdgrp>       
  <trd lng="ro">cateheza</trd>
  <trdgrp lng="ru">
    <trd>&c_k;&c_a;&c_t;&c_je;&c_h;&c_i;&c_z;&c_i;&c_s;</trd>,
    <trd>&c_p;&c_r;&c_je;&c_p;&c_o;&c_d;&c_a;&c_v;&c_a;&c_n;&c_i;&c_je; &c_o;&c_s;&c_n;&c_o;&c_v; &c_v;&c_je;&c_r;&c_y;</trd>
  </trdgrp>
</drv>

<drv mrk="katehx2.0isto">
  <kap><tld/>isto
    <fnt>
      <bib>LR</bib>
      <lok>2. Vortuzo</lok>
    </fnt>,
    <var><kap>katekizisto</kap></var>
    </kap>
  <snc mrk="katehx2.0isto.REL">
  <uzo tip="fak">REL</uzo>
    <dif>
      Instruanto pri la bazoj de religio.
    </dif>
    <ref tip="sin" cel="katehx1.0o">kate&hcirc;isto</ref>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_t;&c_e;&c_h;&c_ib;&c_s;&c_t;</trd>
  <trd lng="ca">catequista</trd>
  <trd lng="de">Katechist</trd>
  <trd lng="en">catechist</trd>
  <trd lng="es">catequista</trd>
  <trd lng="fr">cat&eacute;chiste</trd>
  <trdgrp lng="hu">
    <trd>hitoktat&oacute;</trd>,
    <trd>katek&eacute;ta</trd>
  </trdgrp>
  <trd lng="nl">catecheet</trd>
  <trd lng="pl">katecheta</trd>     
  <trd lng="ro">catihet</trd>
  <trdgrp lng="ru">
    <trd>&c_v;&c_je;&c_r;&c_o;&c_u;&c_ch;&c_i;&c_t;&c_je;&c_l;&c_mol;</trd>,
    <trd>&c_n;&c_a;&c_s;&c_t;&c_a;&c_v;&c_n;&c_i;&c_k;</trd>
  </trdgrp>
</drv>
</art>
