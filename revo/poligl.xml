<art mrk="$Id: poligl.xml,v 1.18 2022/05/01 17:51:19 revo Exp $">
<kap>
  <ofc>2</ofc>
  <rad>poliglot</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="poligl.0o">
  <kap><tld/>o</kap>
  <snc mrk="poligl.0o.LIN">
    <uzo tip="fak">LIN</uzo>
    <dif>
     <ref tip="dif" cel="lingv.plur0ulo.LIN">Plurlingvulo</ref>:
      <ekz>
        oni povas esti <tld/>o, ne estante lingvisto;
      </ekz>
      <ekz>
        <nom>Immanuel Velikovski</nom>, rus- kaj jud-devena usona psikiatro, <tld/>o, ekzegezisto
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="&Steloj;monato1/monato-9311-kaj-la-suno-haltis.txt">Kaj
          la Suno Haltis... </url></vrk>
          <lok>93/11</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>oj estas la pastoroj, &ccirc;u ne
        <fnt>
          <bib>Monato</bib>
          <aut>Gbeglo Koffi</aut>
          <vrk><url ref="&Monato;/2010/009910.php">Ventreligio, dua r
          aldoni&gcirc;u</url></vrk>
          <lok>2010</lok>
        </fnt>?
      </ekz>
    </dif>
    <trd lng="be">&c_p;&c_a;&c_l;&c_ib;&c_g;&c_l;&c_o;&c_t;</trd>
    <trd lng="ca">pol&iacute;glota</trd>
    <trd lng="cs">polyglot</trd>
    <trdgrp lng="de">
      <trd>Polyglot</trd>,
      <trd>Sprachgenie</trd>
    </trdgrp>
    <trd lng="en">polyglot</trd>
    <trd lng="es">pol&iacute;glota</trd>
    <trd lng="fr">polyglotte<klr> (subst.)</klr></trd>
    <trd lng="nl">polyglot</trd>
    <trd lng="pl">poliglota</trd>
    <trd lng="pt">poliglota</trd>
    <trd lng="ro">poliglo&#539;ie</trd>
    <trd lng="ru">&c_p;&c_o;&c_l;&c_i;&c_g;&c_l;&c_o;&c_t;</trd>
    <trd lng="sk">polyglot</trd>
  </snc>
</drv>

<drv mrk="poligl.0eco">
  <kap>
    <tld/>eco, <var><kap><tld/>o <fnt><bib>LR</bib></fnt></kap><uzo tip="stl">ARK</uzo></var>
  </kap>
  <snc mrk="poligl.0o.ARK">
    <dif>
      <ref tip="dif" cel="lingv.plur0eco">Plurlingveco</ref>:
      <ekz>
        la nombro de la radikoj devas esti tre malgranda, kaj &ccirc;io alia devas esti kreata
        la&ubreve; la le&gcirc;oj de la lingvo (ne prenata simple el la ekzistantaj lingvoj por
        pla&ccirc;i al la <tld/>uloj)
        <fnt>
          <bib>LR</bib>
          <lok>4. Vortaroj</lok>
        </fnt>;
      </ekz>
      <ekz>
        kiel ekzemplon de mirinda <tld/>eco la a&ubreve;toro mencias, inter aliaj, la italon
        <nom>Giuseppe Gasparo Mezzofanti</nom> (1774-1849), siatempe konata kiel &leftquot;la plej
        <tld/>a <tld/>o&#x201D;, kiu, la&ubreve; diversaj taksoj, parolis de 70 &gcirc;is 100 lingvojn
        <fnt>
          <bib>Monato</bib>
          <aut>Reinaldo Marcelo Ferreira</aut>
          <vrk><url ref="&Monato;/2007/009078.php">Interlingvistiko por
          &ccirc;iuj</url></vrk>
          <lok>2007</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Mehrsprachigkeit</trd>,
    <trd>Vielsprachigkeit</trd>
  </trdgrp>
  <trd lng="pl">wieloj&eogonek;zyczno&sacute;&cacute;</trd>
  <trd lng="ro">multilingvism</trd>
  <trd lng="uk">&#x43F;&#x43E;&#x43B;&c_ib;&c_g;&#x43B;&#x43E;&c_t;</trd>
</drv>


</art>
