<art mrk="$Id: maltus.xml,v 1.13 2024/01/25 20:10:33 revo Exp $">
<kap>
  <rad>maltusianism</rad>/o
</kap>
<drv mrk="maltus.0o">
  <kap>
    <tld/>o
  </kap>
  <snc>
  <uzo tip="fak">MED</uzo>
  <uzo tip="fak">JUR</uzo>
    <dif>
      <ref tip="super" cel="doktri.0o">Doktrino</ref> de <nom>Thomas
      Robert Malthus</nom> (1766&ndash;1834),
      la&ubreve; kiu la populacio kreskas eksponenciale dum la produktado de
      nutra&jcirc;oj nur lineare,
      kion oni povas malhelpi nur per memvola limigo de naskoj:
      <ekz>
        en kio konsistas la <tld/>o de la libro? &#x2010; en tio, ke &gcirc;i
        asertas, ke la ka&ubreve;zo de
        la milito estas de &ccirc;iam kaj ankora&ubreve; nun: &leftquot;la pa&ubreve;perismo&#x201D;
        <fnt>
          <aut>Frederiko Engelso, trad. Vilhelmo Lutermano</aut>
          <vrk><url ref="https://www.marxists.org/esperanto/marx-engels/engelso-logado.pdf">Pri
          la lo&gcirc;ejproblemo</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="vid" cel="pauxpe.0o">pa&ubreve;perismo</ref>
  </snc>
  <trd lng="be">&c_m;&c_a;&c_l;&c_mol;&c_t;&c_u;&c_z;&c_ib;&c_ja;&c_n;&c_s;&c_t;&c_v;&c_a;</trd>
  <trd lng="ca">maltusianisme</trd>
  <trd lng="de">Malthusianismus</trd>
  <trd lng="fr">malthusianisme</trd>
  <trd lng="hu">malthusianizmus</trd>
  <trd lng="nl">malthusianisme</trd>
  <trd lng="pl">maltuzjanizm</trd>
  <trd lng="pt">malthusianismo</trd>
  <trdgrp lng="ro">
    <trd>malthusianism</trd>,
    <trd>teoria dominoului</trd>
  </trdgrp>
  <trd lng="ru">&c_m;&c_a;&c_l;&c_mol;&c_t;&c_u;&c_z;&c_i;&c_a;&c_n;&c_s;&c_t;&c_v;&c_o;</trd>
  <trdgrp lng="zh">
    <trd>&#x99AC;&#x723E;&#x85A9;&#x65AF;&#x4E3B;&#x7FA9; <pr>m&#x1CE;&#x11B;rs&#xE0;s&#x12B;zh&#x1D4;y&#xEC;</pr></trd>,
    <trd>&#x9A6C;&#x5C14;&#x8428;&#x65AF;&#x4E3B;&#x4E49; <pr>m&#x1CE;&#x11B;rs&#xE0;s&#x12B;zh&#x1D4;y&#xEC;</pr></trd>
  </trdgrp>
</drv>
</art>
