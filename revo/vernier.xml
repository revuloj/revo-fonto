<art mrk="$Id: vernier.xml,v 1.13 2024/05/19 11:18:31 revo Exp $">
<kap>
  <rad>vernier</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="vernier.0o">
  <kap><tld/>o</kap>
  <snc mrk="vernier.0o.TEK">
    <uzo tip="fak">TEK</uzo>
    <dif>
      Aldona <ref tip="super" cel="skal.0o.mezura">skalo</ref> por precize mezuri frakciojn;
      subskala parto glitigebla sur &ccirc;efskala parto:
      <ekz>
        la de&jcirc;oranto kapjesis kaj komencis operacii kun butonoj kaj
        <tld/>oj de la memorma&scirc;ino
        <fnt>
          <aut>Ivan Efremov, trad. Jurij Finkel</aut>,
          <vrk><url ref="http://www.esperanto.mv.ru/Efremov/andromedo.html">La nebulozo de Andromedo</url></vrk>,
          <lok>&ccirc;apitro 10a</lok>
        </fnt>.
      </ekz>
      <ekz>
        per T.S.F.-a ricevilo oni konas horon de la devena meridiano de <nom>Greenwich</nom>,
        dissendita plurfoje &ccirc;iutage de la grandaj sendstacioj de la tuta mondo la&ubreve;
        tre granda precizo, dank al uzo de speco de akustika <tld/>o
        <fnt>
          <aut>P. Tardi</aut>
          <vrk><url ref="https://archive.org/details/BultenoISAE_1935_n37_jan/page/n1/mode/2up">Geodeziaj Laboroj</url></vrk>
          <lok>Bulteno de Internacia Scienca Asocio Esperantista, n-ro 37, jan 1935, p. 2</lok>
        </fnt>.
      </ekz>
    </dif>
    <bld lok="&WCU;/thumb/a/a6/Noniusz_002mm_49mm_ex.jpg/480px-Noniusz_002mm_49mm_ex.jpg" prm="CC BY-SA 3.0"><tld/>o &ccirc;e distancmezurilo
        <fnt>
          <lok><url ref="&WCW;/File:Noniusz_002mm_49mm_ex.jpg">https://commons.wikimedia.org/wiki/File:Noniusz_002mm_49mm_ex.jpg</url></lok>
        </fnt>
    </bld>
  </snc>
  <trd lng="be">&c_v;&c_e;&c_r;&c_n;&c_mol;&c_je;&c_r;</trd>
  <trdgrp lng="ca">
    <trd>n&ograve;nius</trd>,
    <trd>vernier</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>nonius</trd>,
    <trd>vernier</trd>
  </trdgrp>
  <trd lng="de">Nonius</trd>
  <trdgrp lng="en">
    <trd>vernier scale</trd>,
    <trd>vernier caliper</trd>
  </trdgrp>
  <trd lng="fr">vernier</trd>
  <trd lng="hu">n&oacute;niusz</trd>
  <trd lng="nl">vernier</trd>
  <trdgrp lng="pl">
   <trd>wernier</trd>,
   <trd>noniusz</trd>
  </trdgrp>
  <trdgrp lng="pt">
   <trd>n&ocirc;nio</trd>,
   <trd>vernier</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>nonius</trd>,
    <trd>vernier</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_v;&c_je;&c_r;&c_n;&c_mol;&c_jeu;&c_r;</trd>,
    <trd>&c_n;&c_o;&c_n;&c_ib;&c_u;&c_s;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x6E38;&#x6807; <pr>y&#xF3;ubi&#x101;o</pr></trd>,
    <trd>&#x6E38;&#x6A19; <pr>y&#xF3;ubi&#x101;o</pr></trd>,
    <trd>&#x5361;&#x5C3A; <pr>k&#x1CE;ch&#x1D0;</pr></trd>,
    <trd>&#x6E38;&#x6807; <pr>y&#xF3;ubi&#x101;o</pr></trd>,
    <trd>&#x904A;&#x6A19; <pr>y&#xF3;ubi&#x101;o</pr></trd>
  </trdgrp>
</drv>
</art>

