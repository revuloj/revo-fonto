<vortaro>
<art mrk="$Id: j2.xml,v 1.7 2025/12/16 22:34:06 revo Exp $">
<kap>
  -<rad>j</rad>/
</kap>
<drv mrk="j2.0">
  <kap>-<tld/></kap>
  <snc mrk="j2.0.sufikso">
    <uzo tip="stl">RAR</uzo>
    <dif>
      Neoficiala seksne&ubreve;trala <ref tip="super" cel="sufiks.0o">sufikso</ref> karesa,
      almetata post la unua a&ubreve; unuaj silaboj de nomo a&ubreve;
      alia vorto, kiu indikas personon:
      <ekz>
        pup<tld/>o
        <fnt>
          <aut>Bertilo Wennergren</aut>
          <vrk>Plena Manlibro de Esperanta Gramatiko</vrk>
          <lok>
            <url
            ref="&PMEG;vortfarado/neoficialaj_afiksoj/sufiksoj/j.html">J
            kaj PJ</url>
          </lok>
        </fnt>;
      </ekz>
      <ekz>
        Ale<tld/>o
        <fnt>
          <aut>Bertilo Wennergren</aut>
          <vrk>Plena Manlibro de Esperanta Gramatiko</vrk>
          <lok>
            <url
            ref="&PMEG;vortfarado/neoficialaj_afiksoj/sufiksoj/j.html">J
            kaj PJ</url>
          </lok>
        </fnt>;
      </ekz>
      <ekz>
        Hend<tld/>o lo&gcirc;as en Heidelberg
        <fnt>
          <aut>Rogener Pavinski</aut>
          <vrk>10 jarojn de La Perdita Generacio</vrk>
          <lok>&leftquot;Kontakto&rightquot;, n-ro 256 (2013:04), p. 6a</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <ref tip="hom" cel="j.0">-j (pluralo)</ref>
  <refgrp tip="vid">
    <ref cel="cxj.0">&ccirc;j</ref>,
    <ref cel="nj.0">nj</ref>,
    <ref cel="pj.0">pj</ref>,
    <ref cel="et._0.sufikso">et</ref>
  </refgrp>
  <trd lng="be">&c_a;&c_f;&c_ib;&c_k;&c_s; &c_d;&c_l;&c_ja; &c_w;&c_t;&c_v;&c_a;&c_r;&c_e;&c_n;&c_mol;&c_n;&c_ja; &c_l;&c_a;&c_s;&c_k;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_h; &c_f;&c_o;&c_r;&c_m;&c_a;&c_w; &c_n;&c_a;&c_z;&c_o;&c_w;&c_n;&c_ib;&c_k;&c_a;&c_w; &c_b;&c_je;&c_z; &c_u;&c_d;&c_a;&c_k;&c_l;&c_a;&c_d;&c_n;&c_je;&c_n;&c_mol;&c_n;&c_ja; &c_p;&c_l;&c_o;&c_c;&c_ib; &c_w;
  &c_e;&c_s;&c_p;&c_e;&c_r;&c_a;&c_n;&c_t;&c_a; <klr>(&c_n;&c_je;&c_a;&c_f;&c_ib;&c_c;&c_y;&c_j;&c_n;&c_y;, &c_r;&c_e;&c_d;&c_k;&c_ib;)</klr></trd>
  <trd lng="en">-y<klr> (gender-neutral suffix of
  endearment)</klr></trd>
  <trd lng="pl">przyrostek zdrobnienia</trd>
</drv>
