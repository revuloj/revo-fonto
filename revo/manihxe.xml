<vortaro>
  <art mrk="$Id: manihxe.xml,v 1.7 2023/12/21 13:32:24 revo Exp $">
    <kap>
      <rad>Mani&hcirc;e</rad>/o
    </kap>

<drv mrk="manihxe.0o">
  <kap><tld/>o</kap>
  <snc>
  <uzo tip="fak">PERS</uzo><uzo tip="fak">REL</uzo>
   <dif>
      Perse <trd lng="fa">&a_m;&a_A;&a_n;&f_y;</trd>,  latine <trd lng="la">Manichaeus</trd>
      (216&#x202F;-&#x202F;276 a&ubreve; 277), persa <ref tip="lst" lst="voko:historiaj_personoj"
      cel="fond.0into">fondinto</ref>
      de <tld/>ismo, religio bazi&gcirc;anta sur dualismo de bono kaj malbono,
      lumo kaj mallumo:
      <ekz>
        la vorto &leftquot;cigano&#x201D; devenas probable de la pragreka vorto
        &leftquot;<nac>ath&iacute;nganos</nac>&#x201D;, per kiu
        oni indikis t.n. <tld lit="m"/>an sekton &ccirc;eestan sur la monto
        <nom>Athos</nom> ekde la
        oka jarcento
        <fnt>
          <bib>Monato</bib>
          <aut>Julius Hauser</aut>
          <vrk><url ref="&Monato;/2012/010624.php">Ciganoj a&ubreve; romaoj: &ccirc;u lingva
          problemo?</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>o <klr>[&#8230;]</klr> ricevis revelacion kiel junulo, de
        spirito
        kiu<klr>[&#8230;]</klr>, instruis al li la diajn verojn, kiuj i&gcirc;is
        <tld/>ismo
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=59283">Mani&hcirc;eismo</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_M;&c_a;&c_n;&c_ib; <klr>(&c_p;&c_r;&c_a;&c_p;&c_a;&c_v;&c_je;&c_d;&c_n;&c_ib;&c_k;)</klr></trd>
    <trd lng="de">Mani</trd>
    <trd lng="fr">Mani</trd>
    <trd lng="pl">Mani</trd>
    <trd lng="ro">Mani</trd>
  </snc>
  <trd lng="uk">&#x41C;&c_a;&#x43D;&c_ib; (&#x43C;&c_je;&c_t;&c_a;&c_f;&c_ib;&c_z;&c_i;&#x43A;)</trd>
</drv>

