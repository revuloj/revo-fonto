&c_s;&c_k;&c_a;&c_z;&c_u;&c_je;&c_m;&c_o;&c_g;&c_o;</trd>,
        <trd>&c_p;&c_r;&c_je;&c_d;&c_i;&c_k;&c_a;&c_t;&c_i;&c_v;</trd>
      </trdgrp>
  <trdgrp lng="sk">
    <trd>doplnok</trd>,
    <trd>predikat&iacute;v</trd>,
    <trd>vetn&aacute; pr&iacute;slovka</trd>
  </trdgrp>
  <trdgrp lng="uk">
