<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>mok</rad>/i
</kap>
<drv mrk="mok.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Mal&scirc;ate ridindigi iun a&ubreve; ion:
      <ekz>
        ne <tld/>u maljunulon;
      </ekz>
      <ekz>
        fripona atestanto <tld/>as ju&gcirc;iston;
      </ekz>
      <ekz>
        vi for&jcirc;etis miajn konsilojn, tial mi <tld/>os,
        kiam timo vin atakos<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la <tld/>anto estos <tld/>ata<fnt>Z</fnt>;
      </ekz>
      <ekz>
        ne <tld/>u mizeron de alia, &ccirc;ar balda&ubreve;
        venos via
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        ne <tld/>u riveron neatinginte la teron
        <fnt><bib>PrV</bib></fnt>
      </ekz>
    </dif>
    <ref tip="vid" cel="fru">trofrue</ref>
    <refgrp tip="sin">
      <ref cel="rid.0i">ridi</ref>,
      <ref cel="sxerc.0i">&scirc;erci</ref>,
      <ref cel="rikan.0i">rikani</ref>,
      <ref cel="insult.0i">insulti</ref>,
      <ref cel="vip.0i">vipi</ref>,
      <ref cel="kritik.0i">kritiki</ref>,
      <ref cel="satir.0o">satiro</ref>,
      <ref cel="pamfle.0o">pamfleto</ref>,
      <ref cel="sarkas.0o">sarkasmo</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="en">
    <trd>mock</trd>,
    <trd>deride</trd>,
    <trd>jeer at</trd>,
    <trd>scoff at</trd>,
    <trd>make a <ind>butt</ind> of</trd>,
    <trd>make <ind>sport</ind> of</trd>,
    <trd>poke <ind>fun</ind> at</trd>,
    <trd>ridicule</trd>,
    <trd>taunt</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>spotten</trd>,
    <trd>bespotten</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_i;&c_z;&c_d;&c_je;&c_v;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_n;&c_a;&c_s;&c_m;&c_je;&c_h;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_v;&c_y;&c_s;&c_m;&c_je;&c_i;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_o;&c_s;&c_m;&c_je;&c_i;&c_v;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>
