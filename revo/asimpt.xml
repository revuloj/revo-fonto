<art mrk="$Id: asimpt.xml,v 1.19 2023/10/13 17:08:38 revo Exp $">
<kap>
  <rad>asimptot</rad>/o
</kap>
<drv mrk="asimpt.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 33</lok></fnt>
  <snc>
    <dif>
      <klr>(de <ref cel="kurb.0o.MAT">kurbo</ref>)</klr>
      <ref tip="super" cel="rekt.0o.MAT">Rekto</ref>, al kiu &gcirc;i
      senlime alproksimi&gcirc;as:
      <ekz>
        <ref cel="hiperb.0o.linio">hiperbolo</ref> akceptas du
        <tld/>ojn,
        <ref cel="parabo.0o.linio">parabolo</ref> neniun;
      </ekz>
      <ekz>
        la <ref cel="grafik.0ajxo.MAT">grafika&jcirc;o</ref> de funkcio
        <ref cel="logari.0o">logaritmo</ref> akceptas la ordinatan
        akson kiel <tld/>on, kiam la variablo
        <ref cel="streb.0i.MAT">strebas</ref> al nulo.
      </ekz>
    </dif>
    <rim>
      Eblas kvalifiki <tld/>a ne nur rekton, sed anka&ubreve; alian kurbon
      (
      <ekz>
        <tld/>a cirklo
      </ekz>
      ), a&ubreve; e&ccirc; punkton
      (
      <ekz>
        la origino estas <tld/>a punkto de
        <ref cel="spiral.hiperbola0o">hiperbola spiralo</ref>
      </ekz>
      ).
    </rim>
  </snc>
  <trd lng="be">&c_a;&c_s;&c_y;&c_m;&c_p;&c_t;&c_o;&c_t;&c_a;</trd>
  <trdgrp lng="cs">
    <trd>asymptota</trd>,
    <trd>mezn&#xED; te&#x10D;na</trd>
  </trdgrp>
  <trd lng="de">Asymptote</trd>
  <trd lng="en">asymptote</trd>
  <trd lng="es">as&iacute;ntota</trd>
  <trd lng="fr">asymptote</trd>
  <trd lng="he">&#x5D0;&#x5E1;&#x5D9;&#x5DE;&#x5E4;&#x5D8;&#x5D5;&#x5D8;&#x5D4;</trd>
  <trd lng="it">asintoto</trd>
  <trd lng="ja">&#x6F38;&#x8FD1;&#x7DDA;  <pr>&#x305C;&#x3093;&#x304D;&#x3093;&#x305B;&#x3093;</pr></trd>
  <trd lng="nl">asymptoot</trd>
  <trd lng="pl">asymptota</trd>
  <trd lng="ru">&c_a;&c_s;&c_i;&c_m;&c_p;&c_t;&c_o;&c_t;&c_a;</trd>
  <trdgrp lng="sk">
    <trd>asymptota</trd>,
    <trd>doty&#x10D;nica v nekone&#x10D;ne</trd>
  </trdgrp>
  <trd lng="uk">&#x430;&#x441;&#x438;&#x43C;&#x43F;&#x442;&#x43E;&#x442;&#x430;</trd>
</drv>
</art>
