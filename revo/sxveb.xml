<vortaro>
<art mrk="$Id: sxveb.xml,v 1.33 2023/09/04 15:14:36 revo Exp $">
<kap>
  <ofc>3</ofc>
  <rad>&scirc;veb</rad>/i <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="sxveb.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="sxveb.0i.KOMUNE">
    <dif>
      Resti pendanta a&ubreve; gliti en aero:
      <ekz>
        fumo, grizaj nuboj <tld/>is en la aero;
      </ekz>
      <ekz>
        mantelo el nigra veluro <tld/>as super la
        &ccirc;evalo
        <fnt>
          <bib>Fab2</bib>
          <lok>Dio de dormo</lok>
        </fnt>;
      </ekz>
      <ekz>
        en la &gcirc;ardeno preter<tld/>is <klr>(malpeze
        kvaza&ubreve;glite
        preterpasis)</klr> juna knabino<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la &ccirc;ielo, tiu <tld/>anta senbrua oceano<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la peza &scirc;tono fari&gcirc;is <tld/>anta, dancanta, aere
        malpeza junulino<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        ruini&gcirc;o <tld/>as <klr>(minacas, pendas)</klr> super ili.
      </ekz>
    </dif>
  <subsnc mrk="sxveb.0i.fluge">
    <dif>
      Resti en aero kun etenditaj, ne
      movi&gcirc;antaj flugiloj a&ubreve; kun haltinta motoro:
      <ekz>
        super mi <tld/>as du agloj
        <fnt>
          <aut>G. Henriksen</aut>,
          <vrk>
<url ref="http://donh.best.vwh.net/Esperanto/Literaturo/Revuoj/np/np5606/ tagnoktou.html">
          Tagnokto &ccirc;e abismo</url></vrk>,
          <lok>Norda Prismo 1956:6, p. 251-255a</lok>
        </fnt>;
      </ekz>
      <ekz>
        la aeroplano longe <tld/>is.
      </ekz>
    </dif>
    <trdgrp lng="pl">
      <trd>szybowa&cacute;</trd>,
      <trd>zawisa&cacute; <klr>w powietrzu</klr></trd>
    </trdgrp>
  </subsnc>
  <subsnc mrk="sxveb.0i.disflue">
    <dif>
      Disetendi&gcirc;i, disvasti&gcirc;i tra aero:
      <ekz>
        <tld/>as en la aero la ebriiga odoro de siringoj;
      </ekz>
      <ekz>
        kantoj <tld/>is tra la arbara silento;
      </ekz>
      <ekz>
        tiu ideo <tld/>as en la aero
        <klr>(multaj pli-malpli konscie estas penetritaj de iu
        ideo)</klr>;
      </ekz>
      <ekz>
        &gcirc;enerala amika sento <tld/>as en la aero
        <klr>(regas)</klr>.
      </ekz>
    </dif>
    <trd lng="pl">unosi&cacute; si&eogonek;</trd>
  </subsnc>
    <refgrp tip="vid">
      <ref cel="flirt.0i">flirti</ref>,
      <ref cel="flos.0i">flosi</ref>,
      <ref cel="glis.0i">glisi</ref>,
      <ref cel="sor1.0i">sori</ref>
    </refgrp>
    <trd lng="th">&#xE25;&#xE2D;&#xE22; (&#xE2D;&#xE22;&#xE39;&#xE48;&#xE1A;&#xE19;&#xE2D;&#xE32;&#xE01;&#xE32;&#xE28;)</trd>
  </snc> 
  <snc mrk="sxveb.0i.mense">
    <dif>
      Da&ubreve;re restadi en imago a&ubreve; memoro:
      <ekz>
        lia bildo &ccirc;iam <tld/>as anta&ubreve; miaj okuloj;
      </ekz>
      <ekz>
        tiun viza&gcirc;on <klr>[&#x2026;]</klr> mi penis skulpti <klr>[&#x2026;]</klr> tiel, kiel &gcirc;i en la
        rememoro ankora&ubreve; &scirc;vebas anta&ubreve; mia animo
        <fnt>
          <bib>Fab2</bib>
          <lok>Dano Holger</lok>
        </fnt>;
      </ekz>
      <ekz>
        la son&gcirc;oj denove en<tld/>is
        <fnt>
          <bib>Fab2</bib>
          <lok>Ne&gcirc;a re&gcirc;ino</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="pl">unosi&cacute; si&eogonek;</trd>
  </snc>
  <snc mrk="sxveb.0i.hezite">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Resti nefiksa, necerta, sendecida, nedecidita:
      <ekz>
        <tld/>i inter vivo kaj morto;
      </ekz>
      <ekz>
        la vorto <tld/>as sur mia lango;
      </ekz>
      <ekz>
        ni vivas en la stre&ccirc;o de l' necerto, super ni <tld/>as la
        hazardo;
      </ekz>
      <ekz>
        strangaj famoj <tld/>as en la internacia atmosfero;
      </ekz>
      <ekz>
        <tld/>as diversaj proponoj, sed nenio estas definitiva.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="balanc">balanci&gcirc;i</ref>,
      <ref cel="sxance.0igxi">&scirc;anceli&gcirc;i</ref>
    </refgrp>
    <trd lng="pl">unosi&cacute; si&eogonek;</trd>
  </snc>
  <trd lng="be">&c_l;&c_u;&c_n;&c_a;&c_c;&c_mol;</trd>
  <trd lng="de">schweben</trd>
  <trdgrp lng="en">
   <trd>hover</trd>,
   <trd>float <klr tip="amb">(in the air)</klr></trd>
  </trdgrp>
  <trdgrp lng="es">
   <trd>planear <klr tip="amb">(al volar)</klr></trd>,
   <trd>cernerse</trd>, 
   <trd>cerner</trd>,  
   <trd>estar suspendido en el aire</trd>
  </trdgrp> 
  <trd lng="fr">flotter</trd>
  <trdgrp lng="hu">
    <trd>lebeg</trd>,
    <trd>siklik (a leveg&odblac;ben)</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>aleggiare</trd>, 
    <trd>galleggiare<klr> (in aria)</klr></trd>
    <trd>librarsi</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x6D6E;&#x304B;&#x3076;  [<ind>&#x3046;&#x304B;&#x3076;</ind>]</trd>,
    <trd>&#x305F;&#x3060;&#x3088;&#x3046;</trd>,
    <trd>&#x821E;&#x3046;  [<ind>&#x307E;&#x3046;</ind>]</trd>,
    <trd>&#x6ED1;&#x7A7A;&#x3059;&#x308B;  [<ind>&#x304B;&#x3063;&#x304F;&#x3046;&#x3059;&#x308B;</ind>]</trd>,
    <trd>&#x3059;&#x3079;&#x308B;&#x3088;&#x3046;&#x306B;&#x52D5;&#x304F;  [<ind>&#x3059;&#x3079;&#x308B;&#x3088;&#x3046;&#x306B;&#x3046;&#x3054;&#x304F;</ind>]</trd>,
    <trd>&#x6F02;&#x3046;  [<ind>&#x305F;&#x3060;&#x3088;&#x3046;</ind>]</trd>,
    <trd/>,
    <trd>&#x5B99;&#x3065;&#x308A;&#x306B;&#x306A;&#x3063;&#x3066;&#x3044;&#x308B;  [<ind>&#x3061;&#x3085;&#x3046;&#x3065;&#x308A;&#x306B;&#x306A;&#x3063;&#x3066;&#x3044;&#x308B;</ind>]</trd>
  </trdgrp>
  <trd lng="nl">zweven</trd>
  <trd lng="pt">pairar</trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_a;&c_r;&c_i;&c_t;&c_mol;</trd>,
    <trd>&c_r;&c_je;&c_ja;&c_t;&c_mol;</trd>,
    <trd>&c_v;&c_i;&c_t;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
  <trd lng="sv">sv&auml;va</trd>
  <trdgrp lng="uk">
    <trd>&#x448;&#x438;&#x440;&#x44F;&#x442;&#x438;</trd>,
    <trd>&#x448;&#x443;&#x433;&#x430;&#x442;&#x438;</trd>,
    <trd>&#x431;&#x443;&#x44F;&#x442;&#x438;</trd>,
    <trd>&#x43C;&#x430;&#x44F;&#x442;&#x438;</trd>,
    <trd>&#x440;&#x43E;&#x437;&#x432;&#x456;&#x432;&#x430;&#x442;&#x438;&#x441;&#x44F;</trd>,
    <trd>&#x432;&#x438;&#x442;&#x430;&#x442;&#x438;</trd>,
    <trd>&#x432;&#x438;&#x441;&#x456;&#x442;&#x438; &#x432; &#x43F;&#x43E;&#x432;&#x456;&#x442;&#x440;&#x456;</trd>
  </trdgrp>
</drv>

<drv mrk="sxveb.0o">
  <kap><tld/>o</kap>
  <snc mrk="sxveb.0o.KOMUNE">
    <dif>
      Restado en aero.
    </dif>
    <trd lng="de">Schweben</trd>
  <trd lng="es">planeo</trd>
  <trd lng="fr">flottement</trd>
  <trdgrp lng="it">
    <trd>librazione</trd>,
    <trd><klr>il </klr>librarsi</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>szybowanie</trd>,
    <trd>unoszenie si&eogonek;</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>pairo</trd>,
    <trd>adejo</trd>
  </trdgrp>
  </snc>
  <snc mrk="sxveb.0o.licenco">
    <uzo tip="fak">POE</uzo>
    <dif>
      Metrika <ref tip="super" cel="licenc1.0o">licenco</ref>, pro kiu
      oni
      toleras, ke senakcenta silabo trovi&gcirc;u en pozicio, kiun la
      ritma skeleto de la verso difinas akcenta:
      <ekz>
        <ctl>volv&aacute;&jcirc;o de l' sop&iacute;ro vagab&oacute;nda</ctl> <fnt>K</fnt>
        <klr>(<ref cel="jamb.n0o">kvinjambo</ref>, sed &leftquot;de l'&rightquot; 
        kaj &leftquot;va&rightquot; estas senakcentaj silaboj)</klr>;
      </ekz>
      <ekz>
        la ritmo provizore vi&scirc;i&gcirc;as, kaj anstata&ubreve;
        jambo
        a&ubreve; trokeo oni ricevas pirikon <klr>[kaj tiun
        procedon]</klr>
        oni nomas <tld/>o
        <fnt><bib>PGl</bib>, <lok>p. 21</lok></fnt>;
      </ekz>
      <ekz>
        danke al la <tld/>o kaj al &gcirc;ia duonakcenteco la vorto 
       &leftquot;estas&rightquot;
        povas roli kiel jambo, dum fakte temas pri trokeo.
      </ekz>
    </dif>
    <rim>
      En siaj unuaj poetikaj verkoj &K; nomis <ctl><tld/>o</ctl> nur la
      akcentperdon fare de <ref cel="akcent.duon0a">duonakcenta</ref>
      vorto
      sekvanta akcentan silabon. Ja tiu &ccirc;i fenomeno estas aparte
      rimarkinda, kiam &gcirc;i kombini&gcirc;as kun &ccirc;eesto de 
      senakcenta
      silabo en akcenta pozicio, &ccirc;ar &gcirc;i povas erare kredigi,
      ke      
      oni
      inversis la ritmon. Eble tial la termino poste evoluis al la nuna,
      tute
      alia senco.
    </rim>
  </snc>
</drv>

<drv mrk="sxveb.cxirkaux0i">
  <kap>&ccirc;irka&ubreve;<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="sxveb.cxirkaux0i.KOMUNE">
    <dif>
      <tld lit="&Scirc;"/>i &ccirc;irka&ubreve;:
      <ekz>
        super ili eksonis la nevidebla sankta sonorilo,
        &ccirc;irka&ubreve;<tld/>ata de sanktaj spiritoj
        <fnt><bib>Fab2</bib>, <lok>Sonorilo</lok></fnt>;
      </ekz>
      <ekz>
        <klr>[li]</klr> parolis duonvo&ccirc;e, kvaza&ubreve; li timas
        veki la mortinton, a&ubreve; ofendi lian
        &ccirc;irka&ubreve;<tld/>antan spiriton
        <fnt><bib>I&scirc;tar</bib>, <lok>&ccirc;apitro 20a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">umschweben</trd>
  <trdgrp lng="it">
    <trd>volteggiare<klr> (volare)</klr></trd>,
    <trd>circondare<klr> (volando)</klr></trd>, 
    <trd>svolazzare<klr> attorno</klr></trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x43E;&#x431;&#x43B;&#x456;&#x442;&#x430;&#x442;&#x438;</trd>,
    <trd>&#x448;&#x438;&#x440;&#x44F;&#x442;&#x438; &#x43D;&#x430;&#x432;&#x43A;&#x43E;&#x43B;&#x43E; &#x447;&#x43E;&#x433;&#x43E;-&#x43D;.</trd>
  </trdgrp>
</drv>

<drv mrk="sxveb.dis0i">
  <kap>dis<tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="sxveb.dis0i.KOMUNE">
    <dif>
      <tld lit="&Scirc;"/>e disi&gcirc;i tra la &ccirc;irka&ubreve;a spaco:
      <ekz>
        maljuna policano &jcirc;us surmetis sian uniformon, pretigis kafon, 
        kaj nun, anta&ubreve; ol ekiri al sia oficejo kaj ankora&ubreve; iom dormema, 
        sidas malanta&ubreve; la fenestro, kaj &ndash; kiel estas lia kutimo &ndash; 
        rigardas al la pre&gcirc;ejo, kun siaj manoj volvitaj &ccirc;irka&ubreve; tasego, 
        el kiu dis<tld/>as vaporo
        <fnt>
          <aut>U. Becker</aut>
          <vrk><url ref="http://esperanto.net/literaturo/bk/verk/malaperknab.html">
          Malapero de knabo</url></vrk>
          <lok>2011</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>&eacute;maner</trd>,
    <trd>s'<ind>exhaler</ind></trd>
  </trdgrp>
</drv>
</art>
