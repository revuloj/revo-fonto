<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>po&scirc;t</rad>/o
</kap>
<drv mrk="posxt.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <dif>
      Publika organizo por transporto de leteroj a&ubreve; malgrandaj paka&jcirc;oj per
      konvenciaj transportiloj (trajno, &scirc;ipo, aviadilo) a&ubreve; por
      transportado de retmesa&gcirc;oj kaj dosieroj:
      <ekz>
        respondi per revenanta <tld/>o;
      </ekz>
      <ekz>
        <tld/>a internacia konvencio;
      </ekz>
      <ekz>
        <ind><tld/>karto</ind>
        <klr>(senkoverta letero, kun plimalgranda afranko)</klr>;
        <trd lng="nl">briefkaart</trd>
        <trd lng="ru">&c_o;&c_t;&c_k;&c_r;&c_y;&c_t;&c_k;&c_a;</trd>
      </ekz>
      <ekz>
        <ind><tld/>marko</ind>;
        <trd lng="nl">postzegel</trd>
        <trd lng="ru">&c_p;&c_o;&c_ch;&c_t;&c_o;&c_v;&c_a;&c_ja; <ind>&c_m;&c_a;&c_r;&c_k;&c_a;</ind></trd>
      </ekz>
      <ekz>
        <ind>en<tld/>igi</ind> leteron.
        <trd lng="nl">posten</trd>
      </ekz>
    </dif>
  </snc>
  <refgrp>
    <ref cel="leter.0o">letero</ref>,
    <ref cel="ret.0letero">retletero</ref>,
    <ref cel="ret.0posxto">retpo&scirc;to</ref>
  </refgrp>
  <trd lng="de">Post</trd>
  <trd lng="cs">po&scaron;ta</trd>
  <trd lng="en">mail</trd>
  <trd lng="nl">post</trd>
  <trd lng="ru">&c_p;&c_o;&c_ch;&c_t;&c_a;</trd>
</drv>

<drv mrk="posxt.0kesto">
  <kap><tld/>kesto</kap>
  <snc>
    <dif>
      Publika kesto por enmeti sendotajn leterojn a&ubreve; papera&jcirc;ojn.
    </dif>
  </snc>
  <refgrp>
    <ref cel="leter.0kesto">leterkesto</ref>
  </refgrp>
  <trd lng="de">Briefkasten</trd>
  <trd lng="nl">postbus<klr tip="ind"> (voor verzending)</klr></trd>
  <trd lng="ru">&c_p;&c_o;&c_ch;&c_t;&c_o;&c_v;&c_y;&c_j; &c_ja;&c_shch;&c_i;&c_k;</trd>
</drv>

<drv mrk="posxt.0restante">
  <kap><tld/>restante</kap>
  <snc>
    <dif>
      Surskribo sur letero, por ke &gcirc;i estu liverata al la adresulo nur en
      la <tld/>oficejo.
    </dif>
  </snc>
  <trd lng="de">postlagernd</trd>
  <trd lng="fr">poste restante</trd>
  <trd lng="nl">poste restante</trd>
  <trd lng="ru">&c_d;&c_o; &c_v;&c_o;&c_s;&c_t;&c_r;&c_je;&c_b;&c_o;&c_v;&c_a;&c_n;&c_i;&c_ja;</trd>
</drv>

<drv mrk="posxt.0isto">
  <kap><tld/>isto</kap>
  <snc>
    <dif>
      Oficisto, kiu zorgas pri la disdonado a&ubreve; dissendado de
      <tld/>a&jcirc;oj.
    </dif>
  </snc>
  <trd lng="nl">postbode</trd>
  <trd lng="ru">&c_p;&c_o;&c_ch;&c_t;&c_a;&c_l;&c_mol;&c_o;&c_n;</trd>
</drv>
</art>
