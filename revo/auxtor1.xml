<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
  <ofc>*</ofc><ofc>1</ofc>
  <rad>a&ubreve;toritat</rad>/o
</kap>

    <drv mrk="auxtor1.0o">
      <kap><tld/>o</kap>

      <snc mrk="auxtor1.0o.morala">
        <dif>
           Spirita povo, influo, bazita sur respekto al la scioj,
           intelekto, sa&gcirc;o, kompetento de koncerna persono
           a&ubreve; institucio:
           <ekz>
             li havas grandan <tld/>on inter siaj kolegoj pro
             sia kompetenteco;
           </ekz><ekz>
              la tempo de la teoriaj ju&gcirc;oj kaj de klini&gcirc;ado anta&ubreve;
              &scirc;ajnaj <tld/>oj jam de longe pasis
              <fnt><aut>&Z;</aut>:
              <vrk>Parolado anta&ubreve; la 4a Kongreso Esperantista</vrk>,
              <lok>Dresden, 1908-08-17</lok></fnt>;
           </ekz><ekz>
             en nia afero povas ekzisti nur <tld/>eco morala<fnt>Z</fnt>.
           </ekz>
        </dif>
        <trdgrp lng="ru">
           <trd>&c_a;&c_v;&c_t;&c_o;&c_r;&c_i;&c_t;&c_je;&c_t;</trd>,
           <trd>&c_v;&c_l;&c_i;&c_ja;&c_n;&c_i;&c_je;</trd>
        </trdgrp>
      </snc>

      <snc mrk="auxtor1.0o.potenco">
        <dif>
          <ref tip="sin" cel="potenc.0o.JUR.POL">Potenco</ref>:
          <ekz>
             kaj li donis al ili <tld/>on super malpuraj spiritoj
             <fnt><bib>NT</bib>: <lok>&Mar; 6:7.</lok></fnt>;
           </ekz><ekz>
             <tld/>o de regnestro, de le&gcirc;oj.
          </ekz>
         </dif>
        <trdgrp lng="ru">
           <trd>&c_v;&c_l;&c_a;&c_s;&c_t;&c_mol;</trd>,
           <trd>&c_k;&c_o;&c_m;&c_p;&c_je;&c_t;&c_je;&c_n;&c_c;&c_i;&c_ja;</trd>
        </trdgrp>
      </snc>

      <trd lng="cs">autorita</trd>
      <trd lng="fr">autorit&eacute; (pouvoir)</trd>
    </drv>

    <drv mrk="auxtor1.0a">
      <kap><tld/>a</kap>
      <snc mrk="auxtor1.0a.kompetenta">
        <dif>
          Estiminda, obeinda,
          havanta <tld/>on<sncref ref="auxtor1.0o.morala"/>:
          <ekz>
            <tld/>a persono<fnt>Z</fnt>,
          </ekz><ekz>
             kelkaj famuloj favore rekomendis esperanton<klr>: ...</klr>
             la <tld/>a lingvisto A. Meje (Meillet) kaj aliaj
             <fnt><bib>Lanti</bib>: <lok>Je la lumo de la sperto</lok></fnt>;
          </ekz><ekz>
            la&ubreve; la opinio de aliaj personoj, kies ju&gcirc;o en tiaj
            aferoj estas pli <tld/>a ol mia<fnt>Z</fnt>;
          </ekz><ekz>
             okazas, ke tiaj homoj (inkluzive min) alprenas tonon <tld/>an,
             kvaza&ubreve; ili havus ian &#x109;ielan komision deklari, kio estas
             &gcirc;usta kaj kio mal&gcirc;usta
             <fnt><bib>BonaLingvo</bib></fnt>
          </ekz><ekz>
             necesas anka&ubreve; legitimi la motivaron per citoj, per ekzemploj
             el <tld/>aj fontoj
             <fnt><aut>Jorge Camacho</aut>:
                  <vrk>La liturgio de l' foiro</vrk></fnt>;
          </ekz><ekz>
            <tld/>a teksto, raporto.
          </ekz>
        </dif>
        <trdgrp lng="ru">
           <trd>&c_a;&c_v;&c_t;&c_o;&c_r;&c_i;&c_t;&c_je;&c_t;&c_n;&c_y;&c_j;</trd>,
           <trd>&c_v;&c_l;&c_i;&c_ja;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
         </trdgrp>
      </snc>
      <snc mrk="auxtor1.0a.ordonpova">
        <dif>
          Deviga, posedanta <tld/>on<sncref ref="auxtor1.0o.potenco"/>:
          <ekz>
            <tld/>a decido;
          </ekz><ekz>
             <tld/>a tono<fnt>Z</fnt>.
           </ekz><ekz>
          </ekz>
        </dif>
         <trd lng="ru">&c_v;&c_l;&c_a;&c_s;&c_t;&c_n;&c_y;&c_j;</trd>
      </snc>
      <trd lng="cs">autoritativn&iacute;</trd>
      <trdgrp lng="fr">
    <trd>autoritaire</trd>,
    <trd>comp&eacute;tent</trd>,
    <trd>qui fait <ind>autorit&eacute;</ind></trd>
  </trdgrp>
    </drv>

    <drv mrk="auxtor1.0ulo">
      <kap><tld/>(ul)o</kap>
      <snc mrk="auxtor1.0ulo.kompetenta">
        <dif>
          Kompetentulo, fidinda eminentulo:
        <ekz>
           &scirc;ajnaj <tld/>oj<fnt>Z</fnt>;
        </ekz><ekz>
           profesoro J.W. Hopkins (Yale Un.), tiutempe la plej
           granda <tld/>ulo en fako de reptilioj
           <fnt>
             <aut>K. &Ccaron;apek, trad. J. Vondrou&scaron;ek</aut>:
              <vrk>Milito kontra&ubreve; salamandroj</vrk>.
              <lok>>Libro 2a, &ccirc;ap. 8a.</lok></fnt>.
           </ekz>
        </dif>
        <trd lng="ru">&c_a;&c_v;&c_t;&c_o;&c_r;&c_i;&c_t;&c_je;&c_t;&c_n;&c_y;&c_j; &c_ch;&c_je;&c_l;&c_o;&c_v;&c_je;&c_k;</trd>
      </snc>
      <snc mrk="auxtor1.0ulo.estro">
        <dif>
          Estro:
          <ekz>
            spita&#x11D;o <klr>(estas la)</klr> vivperiodo en la a&gcirc;o
            de &ccirc;. 2 &gcirc;is 4 jaroj, kiam la infano ekzercas sin en
            mensa sendependeco per kontra&ubreve;staro al la gepatroj kaj
            aliaj <tld/>uloj
            <fnt><bib>HejmVort</bib></fnt>;
          </ekz><ekz>
            &ccirc;u vi volas ne timi <tld/>ulon?
            <fnt><bib>NT</bib>, <lok>&Rom; 13:3.</lok></fnt>.
           </ekz>
         </dif>
         <trdgrp lng="ru">
          <trd>&c_p;&c_r;&c_je;&c_d;&c_s;&c_t;&c_a;&c_v;&c_i;&c_t;&c_je;&c_l;&c_mol; &c_v;&c_l;&c_a;&c_s;&c_t;&c_i;</trd>,
          <trd>&c_l;&c_i;&c_c;&c_o; &c_n;&c_a;&c_d;&c_je;&c_l;&c_jo;&c_n;&c_n;&c_o;&c_je; &c_v;&c_l;&c_a;&c_s;&c_t;&c_mol;&c_ju;</trd>
         </trdgrp>
      </snc>
      <trd lng="fr">autorit&eacute; (personne)</trd>
    </drv>
  </art>
