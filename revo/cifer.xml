      <trd>digitalitzador</trd>,
      <trd>convertidor digital</trd>
    </trdgrp>
    <trd lng="fa">&a_r;&a_q;&a_m;&f_y;&#x200C;&a_s;&a_A;&a_z;</trd>
    <trd lng="fr">num&eacute;riseur</trd>
