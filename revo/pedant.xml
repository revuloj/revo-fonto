<drv mrk="pedant.0eco">
  <kap><tld/>eco</kap>
  <snc mrk="pedant.0eco.KOMUNE">
    <dif>
      Animstato, agmaniero de <tld/>o;
      <ref tip="sin" cel="akribi.0o.KOMUNE">akribio</ref>:
      <ekz>
        oni devis nur alrigardi &scirc;in: la korpa kaj vesta pure, kiu limi&gcirc;is jam al la
        <tld/>eco, la zorge flegita frizuro de la ondanta hararo, la akcentado de la
        ordo
        <fnt>
          <bib>LGA</bib>
          <lok>II.</lok>
        </fnt>;
      </ekz>
      <ekz>
        kvankam estas rilato inter la francaj ideoj pri &leftquot;la &gcirc;usta vorto&rightquot; kaj tiuj pri
        malri&ccirc;eco, la <tld/>eco, kiun stimulas tia maniero kompreni lingvon, fakte
        efikas al &gcirc;i malri&ccirc;ige
        <fnt>
          <bib>BonaLingvo</bib>
          <lok>4. Emo Difini, Emo Elvoki</lok>
        </fnt>;
      </ekz>
      <ekz>
        &ccirc;iu detalo estas plenumita kun plej la&ubreve;dinda
        diligenteco kaj <tld/>eco
        <fnt><bib>PV</bib></fnt>;
      </ekz>
    </dif>
    <rim>
      Oni ofte perceptas <tld/>econ kiel nekonvena en situacioj postulantaj
      <ref tip="ant" cel="pragma.0ismo.KOMUNE">pragmatismo</ref>n,
      dum <ref tip="sin" cel="akribi.0o">akribio</ref>n oni perceptas kiel konvena
      ekz-e en scienca laboro.
    </rim>
  </snc>
  <trd lng="be">&c_p;&c_e;&c_d;&c_a;&c_n;&c_t;&c_y;&c_ch;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
  <trdgrp lng="cs">
    <trd>lp&ecaron;n&iacute; na mali&ccaron;kostech</trd>,
    <trd>pedantstv&iacute;</trd>,
    <trd>punti&ccaron;k&aacute;&rcaron;stv&iacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Pedanterie</trd>,
    <trd>Kleinlichkeit</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>pedanter&iacute;a</trd>,
    <trd>pedantismo</trd>
  </trdgrp>
  <trd lng="fr">p&eacute;danterie</trd>
  <trdgrp lng="ja">
    <trd>&#23398;&#32773;&#27671;&#21462;&#12426;  <pr>&#12364;&#12367;&#12375;&#12419;&#12365;&#12393;&#12426;</pr></trd>,
    <trd>&#34898;&#23398;&#30340;&#24907;&#24230;  <pr>&#12370;&#12435;&#12364;&#12367;&#12390;&#12365;&#12383;&#12356;&#12393;</pr></trd>,
    <trd>&#26451;&#23376;&#23450;&#35215;&#12394;&#24907;&#24230;
    <pr>&#12375;&#12419;&#12367;&#12375;&#12376;&#12423;&#12358;&#12366;&#12394;&#12383;&#12356;&#12393;</pr></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>pedantstvo</trd>,
    <trd>&lcaron;penie na mali&ccaron;kostiach</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_p;&c_je;&c_d;&c_a;&c_n;&c_t;&c_i;&c_ch;&c_n;&c_ib;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_p;&c_je;&c_d;&c_a;&c_n;&c_t;&c_i;&c_z;&c_m;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#36802;&#27668; <pr>y&umacron;q&igrave;</pr></trd>,
    <trd>&#36802;&#27683; <pr>y&umacron;q&igrave;</pr></trd>,
