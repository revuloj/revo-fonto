<drv mrk="konfid1.0ema">
  <kap><tld/>ema</kap>
  <snc mrk="konfid1.0ema.PSI">
    <dif>
      Fidanta je <tld/>a traktado de sciigoj.
<!-- la ekzmeplo ne ta&ubreve;gas (=konfide!)
      <ekz>
        brokantistoj, kiuj post la transdono de &ccirc;ifonoj, metalpecoj kaj
        papera&jcirc;o
        <tld/>eme rekompencis per trinkglaso
        <fnt>
          <bib>Monato</bib>
          <aut>Franz-Georg R&ouml;ssler</aut>
          <vrk><url ref="&Monato;/2012/010694.php">Dumvivaj
          rabatoj</url></vrk>
          <lok>2012</lok>
        </fnt>.
      </ekz>
-->
    </dif>
  </snc>
  <trd lng="cs">d&uring;v&ecaron;&rcaron;iv&yacute;</trd>
  <trd lng="de">vertrauensselig</trd>
  <trd lng="en">trusting</trd>  
  <trdgrp lng="fr">
    <trd>prompt aux <ind>confidence</ind>s</trd>,
    <trd>bavard<klr tip="ind"> (prompt aux confidences)</klr></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>bizalomra hajl&oacute;</trd>,
    <trd>k&ouml;zl&eacute;keny</trd>,
    <trd>bizalomteljes</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x8A71;&#x3057;&#x597D;&#x304D;&#x306E;  [<ind>&#x306F;&#x306A;&#x3057;&#x3059;&#x304D;&#x306E;</ind>]</trd>,
    <trd>&#x96A0;&#x3057;&#x7ACB;&#x3066;&#x3092;&#x3057;&#x306A;&#x3044;  [<ind>&#x304B;&#x304F;&#x3057;&#x305F;&#x3066;&#x3092;&#x3057;&#x306A;&#x3044;</ind>]</trd>
  </trdgrp>
  <trd lng="nl">mededeelzaam</trd>
  <trdgrp lng="pl">
    <trd>ekspansywny</trd>,
    <trd>rozmowny</trd>
  </trdgrp>   
  <trdgrp lng="ro">
    <trd>expansiv</trd>,
    <trd>guraliv</trd>,
    <trd>sf&abreve;tos</trd>
  </trdgrp>
  <trd lng="sk">d&ocirc;ver&ccaron;iv&yacute;</trd>
</drv>


<drv mrk="konfid1.0ulo">
  <kap><tld/>ulo, <var><kap><tld/>ulino</kap></var></kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="konfid1.0ulo.KOMUNE">
    <dif>
      Al kiu oni konfidas <tld/>ajn sciigojn:
      <ekz>
        <nom>Shogi Effendi</nom> por &scirc;i estis vera proksima spirita
        patro-<tld/>ulo
        <fnt>
          <bib>Monato</bib>
          <aut>Gerrit Berveling</aut>
          <vrk><url ref="&Monato;/2009/009583.php">Honesta
          portreto pri granda homo</url></vrk>
          <lok>2009</lok>
        </fnt>;
      </ekz>   
      <ekz>
        la plenluna nokto estas nokto festa, kaj mi man&gcirc;as en la
        intima kompanio de miaj <tld/>uloj kaj servistoj
        <fnt><bib>MkM</bib>, <lok>&ccirc;apitro 24a</lok></fnt>.
      </ekz>
    </dif>
    <ref tip="super" cel="konfid.0ato">konfidato</ref>
    <trdgrp lng="de">
      <trd>Vertrauensperson</trd>,
      <trd>Bezugsperson</trd>,
      <trd>Geheimnistr&auml;ger</trd>
    </trdgrp>
  </snc>
  <trd lng="cs">d&uring;v&ecaron;rnice</trd>
  <trdgrp lng="fr">
    <trd>confident</trd>,
    <trd>personne de <ind>confiance</ind></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>bizalmas</trd>,
    <trd>bizalmi ember</trd>
  </trdgrp>
  <trd lng="ja">&#x8179;&#x5FC3;  [<ind>&#x3075;&#x304F;&#x3057;&#x3093;</ind>]</trd>
  <trd lng="nl">vertrouwenspersoon</trd>
  <trdgrp lng="pl">
    <trd>powiernik</trd>,
    <trd>zaufany</trd>,
    <trd>powierniczka</trd>,
    <trd>zaufana</trd>
  </trdgrp>   
  <trdgrp lng="ro">
    <trd>confidentul</trd>,
    <trd>confident&abreve;</trd>
  </trdgrp>
  <trd lng="sk">d&ocirc;vern&iacute;&ccaron;ka</trd>
</drv>
