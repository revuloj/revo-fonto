</drv>

<drv mrk="konfid1.0ulo">
  <kap><tld/>ulo, <var><kap><tld/>ulino</kap></var></kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="konfid1.0ulo.KOMUNE">
    <dif>
      Al kiu oni konfidas <tld/>ajn sciigojn:
      <ekz>
        <nom>Shogi Effendi</nom> por &scirc;i estis vera proksima spirita
        patro-<tld/>ulo
        <fnt>
          <bib>Monato</bib>
          <aut>Gerrit Berveling</aut>
          <vrk><url ref="&Monato;/2009/009583.php">Honesta
          portreto pri granda homo</url></vrk>
          <lok>2009</lok>
        </fnt>;
      </ekz>
      <ekz>
        la plenluna nokto estas nokto festa, kaj mi man&gcirc;as en la
        intima kompanio de miaj <tld/>uloj kaj servistoj
        <fnt><bib>MkM</bib>, <lok>&ccirc;apitro 24a</lok></fnt>.
      </ekz>
    </dif>
    <ref tip="super" cel="konfid.0ato">konfidato</ref>
    <trdgrp lng="de">
      <trd>Vertrauensperson</trd>,
      <trd>Bezugsperson</trd>,
      <trd>Geheimnistr&auml;ger</trd>
    </trdgrp>
    <trd lng="zh">&#29238;&#x6BCD;&#x4E00;&#26679;&#30340;&#x4EBA;
    <pr>f&#xF9;m&#x1D4;y&#xED;y&#xE0;ngder&#xE9;n</pr></trd>
</snc>
  <trd lng="be">&c_k;&c_a;&c_n;&c_f;&c_ib;&c_d;&c_e;&c_n;&c_t;</trd>
  <trd lng="cs">d&uring;v&ecaron;rnice</trd>
  <trdgrp lng="fr">
    <trd>confident</trd>,
    <trd>personne de <ind>confiance</ind></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>bizalmas</trd>,
    <trd>bizalmi ember</trd>
  </trdgrp>
  <trd lng="ja">&#33145;&#x5FC3;  <pr>&#12405;&#x304F;&#12375;&#12435;</pr></trd>
  <trd lng="nl">vertrouwenspersoon</trd>
  <trdgrp lng="pl">
    <trd>powiernik</trd>,
    <trd>zaufany</trd>,
    <trd>powierniczka</trd>,
    <trd>zaufana</trd>
  </trdgrp>
  <trdgrp lng="ro">
    <trd>confidentul</trd>,
    <trd>confident&abreve;</trd>
  </trdgrp>
  <trd lng="sk">d&ocirc;vern&iacute;&ccaron;ka</trd>
</drv>
