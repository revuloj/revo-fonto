  <snc>
  <uzo tip="fak">BIB</uzo>
    <dif>
      Kvina libro de la hebrea Le&gcirc;o, parto de la <ref tip="malprt" cel="bibli.0o">Biblio</ref>, kie Dio denove <tld/>as la
      Izraelidojn
      al sia servo.
    </dif>
  </snc>
  <trd lng="be">&c_D;&c_r;&c_u;&c_g;&c_ib; &c_Z;&c_a;&c_k;&c_o;&c_n;
  <klr>(&c_k;&c_n;&c_ib;&c_g;&c_a;
  &c_B;&c_ib;&c_b;&c_l;&c_ib;&c_ib;)</klr></trd>
  <trd lng="bg">&c_V;&c_t;&c_o;&c_r;&c_o;&c_z;&c_a;&c_k;&c_o;&c_n;&c_i;&c_je;</trd>
