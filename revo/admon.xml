  <trd lng="de">Deuteronomium</trd>
  <trd lng="en">Deuteronomy</trd>
  <trd lng="es">Deuteronomio</trd>
  <trd lng="fr">Deut&eacute;ronome</trd>
  <trdgrp lng="hu">
    <trd>Deuteronomium</trd>,
    <trd>M&aacute;sodik <ind>T&ouml;rv&eacute;nyk&ouml;nyv</ind></trd>,
    <trd>M&oacute;zes 5. k&ouml;nyve</trd>
  </trdgrp>
  <trd lng="id">Ulangan (kitab)</trd>
  <trd lng="it">Deuteronomio</trd>
  <trd lng="pl">Ksi&eogonek;ga powt&oacute;rzonego prawa</trd>
  <trd lng="pt">Deuter&ocirc;nimo</trd>
  <trd lng="ru">&c_V;&c_t;&c_o;&c_r;&c_o;&c_z;&c_a;&c_k;&c_o;&c_n;&c_i;&c_je;
  </trd>
</drv>
</art>
