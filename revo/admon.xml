<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
  <kap><ofc>*</ofc><rad>admon</rad>/i</kap>
<drv mrk="admon.0i">
    <kap><ofc>*</ofc><tld/>i</kap>
    <gra><vspec>tr</vspec></gra>
    <snc num="1">
      <dif>
        Instigi, kura&gcirc;igi per parolo al ia ago a&ubreve; devo:
        <ekz>
          la instruisto <tld/>is la lernantojn al diligenteco<fnt>Z</fnt>;
        </ekz>
        <ekz><tld/>i la popolojn al paco;</ekz>
        <ekz>la policano <tld/>is la popolamason disiri<fnt>B</fnt>;</ekz>
        <ekz>mi <tld/>as vin sekvi tiun ekzemplon;</ekz>
        <ekz>per lerta <tld/>o <klr>(reklamo)</klr> alfluas la mono<fnt><bib>PrV</bib></fnt>;</ekz>
         <ekz>oni pli facile donas <tld/>on ol monon<fnt>Z</fnt>.</ekz>
       </dif>
       <refgrp tip="sin">
         <ref cel="rekome.0i">rekomendi</ref>.
       </refgrp>
       <refgrp tip="vid">
         <ref cel="kvalit.0o">kvalito</ref>.
       </refgrp>
       <trdgrp lng="be">
         <trd>&c_u;&c_g;&c_a;&c_v;&c_o;&c_r;&c_v;&c_a;&c_c;&c_mol;</trd>, 
         <trd>&c_s;&c_h;&c_ib;&c_l;&c_ja;&c_c;&c_mol;</trd>
       </trdgrp>
       <trdgrp lng="de">
         <trd>anhalten</trd>,
         <trd>auffordern</trd>
       </trdgrp>
       <trdgrp lng="fr">1
         <trd>exhorter</trd>,
         <trd>mettre en <ind>garde</ind></trd></trdgrp>
       <trd lng="nl">aanmanen</trd>
       <trdgrp lng="pt">
         <trd>exortar</trd>,
         <trd>induzir</trd>
       </trdgrp>
       <trdgrp lng="ru">
         <trd>&c_u;&c_g;&c_o;&c_v;&c_a;&c_r;&c_i;&c_v;&c_a;&c_t;&c_mol;</trd>,
         <trd>&c_u;&c_b;&c_je;&c_zh;&c_d;&c_a;&c_t;&c_mol;</trd>
       </trdgrp>
       <trd lng="sv">uppmana</trd>
    </snc>
    <snc num="2">
      <dif>
        Inviti iun per parolo, ke li ne faru ion, severe malla&ubreve;di,
        ripro&ccirc;i:
        <ekz>
          la instruisto <tld/>is la lernantojn pro ilia
          maldiligenteco;
        </ekz>
        <ekz>
          de<tld/>i iun de io<fnt>Z</fnt>
          <klr>(malkonsili ion al iu)</klr>.
        </ekz>
      </dif>
      <refgrp tip="sin">
        <ref cel="avert.0i">averti</ref>
      </refgrp>
      <trd lng="be">&c_a;&c_d;&c_g;&c_a;&c_v;&c_o;&c_r;&c_v;&c_a;&c_c;&c_mol;</trd>
      <trdgrp lng="de">
        <trd>ermahnen</trd>,
        <trd>verwarnen</trd>,
        <trd>r&uuml;gen</trd>
      </trdgrp>
      <trd lng="fr">r&eacute;primander</trd>
      <trd lng="nl">berispen</trd>
      <trdgrp lng="pt">
        <trd>admoestar</trd>,
        <trd>advertir</trd>,
        <trd>repreender</trd>
      </trdgrp>
      <trd lng="ru">&c_o;&c_t;&c_g;&c_o;&c_v;&c_a;&c_r;&c_i;&c_v;&c_a;&c_t;&c_mol;</trd>
      <trd lng="sv">f&ouml;rmana</trd>
    </snc>
    <trd lng="en">admonish</trd>
    <trd lng="es">exhortar</trd>
    <trd lng="it">ammonire</trd>
</drv>

<drv mrk="admon.re0o">
    <kap>re<tld/>o</kap>
    <uzo tip="fak">BIB</uzo>
    <snc>
      <dif>
        Kvina libro de la hebrea Le&gcirc;o, kie Dio denove <tld/>as la
        Izraelidojn al sia servo.
      </dif>
    </snc>
  <trd lng="fr">Deut&eacute;ronome</trd>
  <trd lng="pt">Deuter&ocirc;nimo</trd>
</drv>
</art>
