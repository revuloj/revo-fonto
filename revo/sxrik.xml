<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: sxrik.xml,v 1.11 2025/04/06 06:47:43 revo Exp $">
<kap>
  <rad>&scirc;rik</rad>/i <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="sxrik.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="sxrik.0i.SON">
    <dif>
      Akute kaj tre la&ubreve;te
      <ref tip="super" cel="kri.0i.vocxi">krii</ref>
      pro doloro, timego, subita &scirc;okego:
      <ekz>
        &gcirc;i <tld/>as tiom la&ubreve;tege, ke tiu, kiu eltiras &gcirc;in,
        tuj mortas
        <fnt><bib>SatirRak</bib>, <lok>supersti&ccirc;o</lok></fnt>;
      </ekz>
      <ekz>
        la tuta strato <tld/>is per histeriaj inaj vo&ccirc;oj
        <fnt>
          <bib>MkM</bib>
          <lok>3</lok>
        </fnt>;
      </ekz>
      <ekz>
        ili ka&ubreve;zis akran doloron, kiu <tld/>igis min
        <fnt>
          <bib>Mortul&Scirc;ip</bib>
          <lok>&Ccirc;apitro 32</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="strid.0i">stridi</ref>
    </refgrp>
  </snc>
  <rim>
    La&#365; <fnt><bib>BL</bib></fnt>: Prefere diru <ke>akute krii</ke>.
  </rim>

  <trdgrp lng="be">
    <trd>&c_v;&c_ib;&c_sh;&c_ch;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_je;&c_k;&c_a;&c_t;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_s;&c_k;&c_a;&c_v;&c_y;&c_t;&c_a;&c_c;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>kreischen</trd>,
    <trd>aufschreien</trd>
  </trdgrp>
  <trd lng="en">shriek</trd>
  <trd lng="fr">hurler<klr> (de peur etc.)</klr></trd>
  <trdgrp lng="hu">
    <trd>sik&iacute;t</trd>,
    <trd>sikolt</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>strillare<klr> (di paura o dolore)</klr></trd>,
    <trd>gridare<klr> (di paura o dolore)</klr></trd>
    <trd>urlare<klr> (di paura o dolore)</klr></trd>
  </trdgrp>
  <trd lng="pl">wrzeszcze&cacute;</trd>
  <trd lng="pt">guinchar</trd>
  <trd lng="ru">&c_v;&c_i;&c_z;&c_zh;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="zh">
    <trd>&#21483;&#21898; <pr>ji&#224;oh&#462;n</pr></trd>,
    <trd>&#21564; <pr>h&#466;u</pr></trd>,
    <trd>&#22199; <pr>r&#462;ng</pr></trd>,
    <trd>&#24808;&#21483; <pr>c&#462;nji&#224;o</pr></trd>,
    <trd>&#24920;&#21483; <pr>c&#462;nji&#224;o</pr></trd>
  </trdgrp>
</drv>

<drv mrk="sxrik.0o">
  <kap>
    <tld/>o
  </kap>
  <snc>
    <dif>
      Ago <tld/>i; akra alta krisono:
      <ekz>
        la lastaj <tld/>oj de mortigato
        <fnt>
          <bib>LOdE</bib>
          <lok>1999, No 10 (60)</lok>
        </fnt>;
      </ekz>
      <ekz>
        la <tld/>ojn ka&ubreve;zis tio, ke la amaso premegis kelkajn virinojn kiam &gcirc;i
        movi&gcirc;is
        anta&ubreve;en
        <fnt>
          <bib>MkM</bib>
          <lok>2</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi a&ubreve;dis la knarojn kaj <tld/>ojn de la vin&ccirc;o
        <fnt>
          <bib>Mortul&Scirc;ip</bib>
          <lok>&Ccirc;apitro 19</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_v;&c_ib;&c_s;&c_k;</trd>,
    <trd>&c_s;&c_k;&c_a;&c_v;&c_y;&c_t;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
    <trd>&c_je;&c_k;&c_a;&c_t;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
    <trd>&c_jo;&c_k;&c_a;&c_t;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Kreischen</trd>,
    <trd>Gekreische</trd>
  </trdgrp>
</drv>
</art>

