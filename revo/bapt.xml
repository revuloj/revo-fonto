<?xml version="1.0"?>

<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>bapt</rad>/i
</kap>

<drv mrk="bapt.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="bapt.0i.KRI">
    <uzo tip="fak">KRI</uzo>
    <dif>
      Rite purigi iun en akvo, precipe en kristanismo kun la donado de
      aparta nomo.
    </dif>
    <ref tip="super" cel="sakram.0o.kri">sakramento</ref>
    <trd lng="hu">keresztel</trd>
    <trdgrp lng="pl">
      <trd>chrzci&cacute;</trd>,
      <trd>ochrzci&cacute;</trd>
    </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_k;&c_r;&c_je;&c_s;&c_t;&c_i;&c_t;&c_mol;</trd>,
      <trd>&c_k;&c_r;&c_je;&c_shch;&c_a;&c_t;&c_mol;</trd>,
      <trd>&c_o;&c_k;&c_r;&c_je;&c_s;&c_t;&c_i;&c_t;&c_mol;</trd>
    </trdgrp>
  </snc>
  <snc mrk="bapt.0i.KOMUNE">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Doni nomon al iu a&ubreve; io:
      <ekz>
        <tld/>i &scirc;ipon, sonorilegon.
      </ekz>
    </dif>
    <ref tip="super" cel="inauxg.0i">ina&ubreve;guri</ref>
    <trdgrp lng="hu">
      <trd>felszentel <klr tip="ind">(nevet ad)</klr></trd>,
      <trd>nevet ad</trd>
    </trdgrp>
    <trdgrp lng="pl">
      <trd>chrzci&cacute;</trd>,
      <trd>ochrzci&cacute;</trd>
    </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_d;&c_a;&c_t;&c_mol; &c_i;&c_m;&c_ja;</trd>,
      <trd>&c_o;&c_s;&c_v;&c_ja;&c_t;&c_i;&c_t;&c_mol;</trd>
    </trdgrp>
  </snc>
  <trd lng="br">badezi&ntilde;</trd>
  <trd lng="de">taufen</trd>
  <trd lng="en">baptize</trd>
  <trd lng="es">bautizar</trd>
  <trdgrp lng="fr">
    <trd>baptiser</trd>,
    <trd>d&eacute;nommer <klr tip="ind">(donner un nom)</klr></trd>
  </trdgrp>
  <trd lng="nl">dopen</trd>
  <trd lng="sk">krsti&tcaron;</trd>
  <trd lng="sv">d&ouml;pa</trd>
</drv>

<drv mrk="bapt.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Religia a&ubreve; civila ceremonio per kiu oni <tld/>as.
      <ekz>
        venis Johano, kiu <klr>...</klr> predikis la <tld/>on de pento
        por
        la pardonado de pekoj
        <fnt><bib>NT</bib>, <lok>&Mar; 1:4</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="br">
    <trd>badez</trd>,
    <trd>badeziant</trd>
  </trdgrp>
  <trd lng="de">Taufe</trd>
  <trd lng="en">baptism</trd>
  <trd lng="es">bautizo</trd>
  <trd lng="fr">bapt&ecirc;me</trd>
  <trdgrp lng="hu">
    <trd>keresztel&odblac;</trd>,
    <trd>keresztel&eacute;s</trd>
  </trdgrp>
  <trd lng="nl">doopsel</trd>
  <trd lng="pl">chrzest</trd>
  <trd lng="ru">&c_k;&c_r;&c_je;&c_shch;&c_je;&c_n;&c_i;&c_je;</trd>
  <trd lng="sk">krst</trd>
  <trd lng="sv">dop</trd>
</drv>

<drv mrk="bapt.0ano">
  <kap><tld/>ano</kap>
  <snc mrk="bapt.0ano.KRI">
    <dif>
      <ref cel="bapt.0opatro"><tld lit="B"/>opatro</ref>
      rilate al la <tld/>opatrino a&ubreve; al la gepatroj de <tld/>ato:
      <ekz>
        jen kion li skribas:
        &leftquot;kara amiko, <tld/>ano kaj bonfaranto!&rightquot;
        <fnt><bib>Revizoro</bib>, <lok>akto 1a, sceno 1a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">comp&egrave;re<klr tip="amb"> (au
  bapt&ecirc;me)</klr></trd>
  <trd lng="pl">kum<klr> {m}</klr></trd>
  <trd lng="ru">&c_k;&c_u;&c_m;</trd>
</drv>

<drv mrk="bapt.0anino">
  <kap><tld/>anino</kap>
  <snc mrk="bapt.0anino.KRI">
    <dif>
      <ref cel="bapt.0opatrino"><tld lit="B"/>opatrino</ref>
      rilate al la <tld/>opatro a&ubreve; al la gepatroj de <tld/>ato:
      <ekz>
        denunci lin pro tio, ke li geedzigis vendiston Mikelon kun
        lia <tld/>anino
        <klr>(&ccirc;e la ortodoksaj kristanoj geedzi&gcirc;o inter
        ge<tld/>anoj estas malpermesita)</klr>
        <fnt><aut>N. Gogol, trad. V. Vy&ccirc;eg&jcirc;anin</aut>,
        <vrk>Malvivaj animoj</vrk>, <lok>&ccirc;apitro 10</lok>.
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">comm&egrave;re<klr tip="amb"> (au
  bapt&ecirc;me)</klr></trd>
  <trd lng="pl">kuma<klr> {f}</klr></trd>
  <trd lng="ru">&c_k;&c_u;&c_m;&c_a;</trd>
</drv>

<drv mrk="bapt.0ato">
  <kap><tld/>ato</kap>
  <snc mrk="bapt.0ato.KRI">
    <dif>
      Tiu, kiu ricevas la <tld/>on.
    </dif>
  </snc>
  <trd lng="de">T&auml;ufling</trd>
  <trd lng="fr">baptis&eacute;</trd>
  <trd lng="hu">keresztelend&odblac;</trd>
  <trd lng="nl">dopeling</trd>
  <trd lng="ru">&c_k;&c_r;&c_je;&c_shch;&c_a;&c_je;&c_m;&c_y;&c_j;</trd>
</drv>

<drv mrk="bapt.0ingo">
  <kap><tld/>ingo</kap>
  <snc mrk="bapt.0ingo.KRI">
    <uzo tip="fak">KRI</uzo>
    <dif>
      Kuvo en kiu okazas <tld/>aj akvumoj:
      <ekz>
        estis en la &ccirc;ambro neniu, krom la aku&scirc;istino kiu en
        ver&scirc;is akvon
        en la <tld/>ingo
        <fnt><bib>Voja&gcirc;Imp</bib>, <lok>du blinduloj, sceno el la
        lando de
        Donaj kozakoj</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="br">
    <trd>maen-badez</trd>,
    <trd>maen-font</trd>
  </trdgrp>
  <trd lng="fr">fonts baptismaux</trd>
  <trd lng="ru">&c_k;&c_u;&c_p;&c_je;&c_l;&c_mol;</trd>
</drv>

<drv mrk="bapt.0ofilo">
  <kap><ofc>*</ofc><tld/>ofilo</kap>
  <snc mrk="bapt.0ofilo.KRI">
    <dif>
      La <tld/>ito rilate al la <tld/>opatro a&ubreve; <tld/>opatrino.
    </dif>
  </snc>
  <trd lng="br">filhor</trd>
  <trd lng="de">Patenkind</trd>
  <trd lng="en">godson</trd>
  <trd lng="es">ahijado</trd>
  <trd lng="fr">filleul</trd>
  <trd lng="hu">keresztfi&udblac;</trd>
  <trd lng="nl">petekind</trd>
  <trdgrp lng="pl">
    <trd>chrze&sacute;niak<klr> {m}</klr></trd>,
    <trd>chrze&sacute;nica<klr> {f}</klr></trd>
  </trdgrp>
  <trd lng="ru">&c_k;&c_r;&c_je;&c_s;&c_t;&c_n;&c_i;&c_k;</trd>
</drv>

<drv mrk="bapt.0opatro">
  <kap><ofc>*</ofc><tld/>opatro</kap>
  <snc mrk="bapt.0opatro.KRI">
    <dif>
      Tiu viro, kiu prezentas infanon por <tld/>o,
      donante al &gcirc;i &gcirc;ian anta&ubreve;nomon.
    </dif>
  </snc>
  <trd lng="br">paeron</trd>
  <trd lng="de">Taufpate</trd>
  <trd lng="en">godfather</trd>
  <trd lng="es">padrino</trd>
  <trdgrp lng="fr">
    <trd>parrain</trd>
  </trdgrp>
  <trd lng="hu">keresztapa</trd>
  <trdgrp lng="nl">
    <trd>peter</trd>,
    <trd>peetvader</trd>
  </trdgrp>
  <trd lng="ru">&c_k;&c_r;&c_jo;&c_s;&c_t;&c_n;&c_y;&c_j;
  &c_o;&c_t;&c_je;&c_c;</trd>
  <trdgrp lng="pl">
    <trd>ojciec <ind>chrzestny</ind></trd>,
    <trd>chrzestny<klr> (pot.)</klr></trd>
  </trdgrp>
  <trd lng="sk">krstn&yacute; otec</trd>
</drv>

<drv mrk="bapt.0opatrino">
  <kap><tld/>opatrino</kap>
  <snc mrk="bapt.0opatrino.KRI">
    <dif>
      Tiu virino, kiu prezentas infanon por <tld/>o,
      donante al &gcirc;i &gcirc;ian anta&ubreve;nomon.
    </dif>
  </snc>
  <trd lng="br">maeronez</trd>
  <trd lng="de">Taufmutter</trd>
  <trd lng="es">madrina</trd>
  <trd lng="en">godmother</trd>
  <trdgrp lng="fr">
    <trd>marraine</trd>
  </trdgrp>
  <trd lng="hu">keresztanya</trd>
  <trdgrp lng="nl">
    <trd>meter</trd>,
    <trd>peetmoeder</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>matka <ind>chrzestna</ind></trd>,
    <trd>chrzestna<klr> (pot.)</klr></trd>
  </trdgrp>
  <trd lng="sk">krstn&aacute; matka</trd>
  <trd lng="ru">&c_k;&c_r;&c_jo;&c_s;&c_t;&c_n;&c_a;&c_ja;
  &c_m;&c_a;&c_t;&c_mol;</trd>
</drv>
</art>
