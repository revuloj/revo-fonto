<art mrk="$Id: ekspli.xml,v 1.26 2025/03/29 13:06:03 revo Exp $">
<kap>
  <rad>eksplik</rad>/i
  <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="ekspli.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      <ref tip="dif" cel="klar.0igi">Klarigi</ref> kaj
      <ref tip="sin" cel="kompre.0igi">komprenigi</ref> ion, montrante
      &gcirc;ian signifon, &gcirc;ian naturon, &gcirc;iajn ka&ubreve;zojn a&ubreve; motivojn:
      <ekz>
        li <tld/>is la genezon de la hinde&ubreve;ropaj lingvoj en formo de genealogia arbo
        <fnt>
          <bib>Ret</bib>
        </fnt>;
      </ekz>
      <ekz>
        en la <nom>Hyde</nom>-parko oratoroj <tld/>as siajn ideojn
        <fnt>
          <bib>VaK</bib>
        </fnt>;
      </ekz>
      <ekz>
        la beato signifas al la animo iaspecan energio-akiron kaj <klr>[&#8230;]</klr> &ndash;
        <tld/>u tion pli kompreneble!
        <fnt>
          <bib>VaK</bib>
        </fnt>;
      </ekz>
      <ekz>
        mi ne povis kuiri man&gcirc;on por du, sed mi bone <tld/>is al ili la kuirilon
        <fnt>
          <bib>KrM</bib>
        </fnt>;
      </ekz>
      <ekz>
        la antagonismoj de la reala&jcirc;o reflekti&gcirc;as anka&ubreve; en la literaturo, tio <tld/>as
        la fakton, ke anka&ubreve; en la Esperanta literaturo <klr>[&#8230;]</klr> manifesti&gcirc;as la
        samaj kontra&ubreve;diroj
        <fnt>
          <bib>EeP</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="demons1.0i.prezenti">demonstri<sncref/></ref>,
      <ref cel="detal.0igi">detaligi</ref>,
      <ref cel="kial.0igi">kialigi</ref>
    </refgrp>
  </snc>
  <rim>
    La&#365; <fnt><bib>BL</bib></fnt>: Prefere diru <ke>klarigi</ke>.
  </rim>

  <adm>
    Mi emas opinii, ke ~i estas preska&ubreve; &ccirc;iam anstata&ubreve;igebla
    per "klarigi". Indus precizigi eventualan senconuancon, se ekzistas,
    a&ubreve; diri klare, ke temas pri sinonimo de unu el la sencoj de "klarigi".
    <aut>MB</aut>
  </adm>
  <trdgrp lng="be">
    <trd>&c_t;&c_l;&c_u;&c_m;&c_a;&c_ch;&c_y;&c_c;&c_mol;</trd>,
    <trd>&c_r;&c_a;&c_s;&c_t;&c_l;&c_u;&c_m;&c_a;&c_ch;&c_y;&c_c;&c_mol;</trd>,
    <trd>&c_v;&c_y;&c_t;&c_l;&c_u;&c_m;&c_a;&c_ch;&c_y;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="ca">explicar</trd>
  <trdgrp lng="de">
     <trd>erl&auml;utern</trd>,
     <trd>darlegen</trd>,
     <trd>ausf&uuml;hrlich erkl&auml;ren</trd>,
     <trd>ausf&uuml;hrlich darstellen</trd>
  </trdgrp>
  <trd lng="en">explicate</trd>
  <trd lng="es">explicar</trd>
  <trd lng="fr">expliquer</trd>
  <trdgrp lng="hu">
    <trd>kifejt</trd>,
    <trd>elmagyar&aacute;z</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#35299;&#35500;&#12377;&#12427;  <pr>&#12363;&#12356;&#12379;&#12388;&#12377;&#12427;</pr></trd>,
    <trd>&#35500;&#26126;&#12377;&#12427;  <pr>&#12379;&#12388;&#12417;&#12356;&#12377;&#12427;</pr></trd>
  </trdgrp>
  <trd lng="nl">verklaren</trd>
  <trdgrp lng="pl">
    <trd>obja&sacute;nia&cacute;</trd>,
    <trd>wyja&sacute;nia&cacute;</trd>,
    <trd>t&lstroke;umaczy&cacute;</trd>,
    <trd>klarowa&cacute;<klr> (pot.)</klr></trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>explicar</trd>,
    <trd>esclarecer</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_o;&c_b;&c_malmol;&c_ja;&c_s;&c_n;&c_ja;&c_t;&c_mol;</trd>,
    <trd>&c_r;&c_a;&c_z;&c_malmol;&c_ja;&c_s;&c_n;&c_ja;&c_t;&c_mol;</trd>,
    <trd>&c_r;&c_a;&c_s;&c_t;&c_o;&c_l;&c_k;&c_o;&c_v;&c_y;&c_v;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
  <trd lng="sv">f&ouml;rklara</trd>
  <trdgrp lng="sk">
    <trd>objasni&tcaron;</trd>,
    <trd>vylo&zcaron;i&tcaron;</trd>,
    <trd>vysvetli&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>vysv&ecaron;tlit</trd>,
    <trd>vysv&ecaron;tlovat</trd>
  </trdgrp>
<trdgrp lng="de">
  <trd>erl&auml;utern</trd>,
  <trd>darlegen</trd>,
  <trd>ausf&uuml;hrlich <ind>erkl&auml;ren</ind></trd>,
  <trd>ausf&uuml;hrlich <ind>darstellen</ind></trd>
</trdgrp>  <trdgrp lng="uk">
    <trd>&#1087;&#1086;&#1103;&c_s;&#1085;&#1102;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_r;&#1086;&c_z;&#8217;&#1103;&c_s;&#1085;&#1102;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_r;&#1086;&c_z;&c_t;&#1083;&c_u;&#1084;&c_a;&c_ch;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#30003;&#36848; <pr>sh&emacron;nsh&#249;</pr></trd>,
    <trd>&#37322; <pr>sh&#236;</pr></trd>,
    <trd>&#33002; <pr>l&#250;</pr></trd>,
    <trd>&#20132;&#20195; <pr>ji&amacron;od&#224;i</pr></trd>,
    <trd>&#35393; <pr>g&#468;</pr></trd>,
    <trd>&#36848; <pr>sh&#249;</pr></trd>,
    <trd>&#35299; <pr>ji&#283;</pr></trd>,
    <trd>&#30003; <pr>sh&emacron;n</pr></trd>,
    <trd>&#35611;&#35299; <pr>ji&#462;ngji&#283;</pr></trd>
  </trdgrp>
</drv>
