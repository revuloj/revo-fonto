    <kap>
      <rad>Laj</rad>/o
      <fnt><bib>PIV1</bib></fnt>
    </kap>

<drv mrk="laj.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">NOM</uzo>
  <uzo tip="fak">MIT</uzo>
  <snc>
    <dif>
      Vira <ref tip="lst" lst="voko:personaj_nomoj" cel="nom.persona0o.GEN">nomo</ref>,
      grekdevena, i.a. la patro de <ref cel="edip.0o">Edipo</ref>; anka&ubreve; hungara formo de
      <ref tip="sin" cel="ludovik.0o">Ludoviko</ref>:
      <ekz>
        la intrigo de Re&gcirc;o Edipo estas simpla: orakoloj profetis, ke la &jcirc;us naskita filo
        de <tld/>o, la re&gcirc;o de Tebo, plenkreskinte, murdos sian patron kaj edzi&gcirc;os
        kun sia patrino
        <fnt>
          <bib>Monato</bib>
          <aut>Donald Broadribb</aut>
          <vrk><url ref="https://www.monato.be/2005/008458.php"
              >Modernantikva majstra greka dramo</url></vrk>
          <lok>2005</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_L;&c_a;&c_j; <klr tip="amb">(&c_s;&c_t;&c_a;&c_r;&c_a;&c_zh;&c_y;&c_t;&c_n;&c_a;&c_g;&c_r;&c_e;&c_c;&c_k;&c_a;&c_je; &c_ib;&c_m;&c_ja;)</klr></trd>
    <trd lng="de">Laios</trd>
    <trd lng="en">Laius</trd>
    <trd lng="fr">La&iuml;os</trd>
    <trd lng="grc">&Lambda;&alfa_ton;&jota;&omikron;&sigma_fina;</trd>
    <trd lng="ru">&c_L;&c_a;&c_i;&c_j;</trd>
  </snc>
</drv>

  </art>

