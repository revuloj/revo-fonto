<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
   <art mrk="$Id$">
     <kap>
       <rad>topologi</rad>/o
     </kap>
     <drv mrk="topolo.0o">
       <kap><tld/>o</kap>
       <uzo tip="fak">MAT</uzo>
       <snc mrk="topologi.0o.fako">
         <dif>
           Matematika bran&ccirc;o, kiu okupi&gcirc;as &ccirc;efe
           pri kontinueco, limeso, konver&gcirc;o k.s.
         </dif>
       </snc>

       <snc mrk="topolo.0o.strukturo">
         <dif>
           (super aro <em>E</em>)
           Tia <ref tip="super" cel="ar.0o.MAT">aro</ref> <em>T</em> da
           subaroj de <em>E</em>, ke
           la malplena aro kaj <em>E</em> apartenas al &gcirc;i,
           kaj ke &ccirc;iu <ref cel="kun.0igajxo.aro">kuniga&jcirc;o</ref>
           de arbitra nombro da &gcirc;iaj elementoj kaj &ccirc;iu
           <ref cel="komun.0ajxo.aro">komuna&jcirc;o</ref> de finia nombro
           da &gcirc;iaj elementoj apartenas al &gcirc;i:
           <ekz>
             la elementojn de <tld/>o oni nomas malfermitaj subaroj;
           </ekz>
           <ekz>
             la <tld/>o, konsistanta nur el <em>E</em> k la malplena aro
             estas nomata <ctl>kruda <tld/>o</ctl>.
           </ekz>
         </dif>
         <refgrp tip="vid">
           <ref cel="spac.topologia0o">topologia spaco</ref>,
           <ref cel="ferm.mal0ita.topologio">malfermita subaro</ref>,
           <ref cel="ferm.0ita.topologio">fermita subaro</ref>,
           <ref 
cel="cxirka.0ajxo.topologio">&ccirc;irka&ubreve;a&jcirc;o</ref>;
         </refgrp>
         <ref tip="vid" cel="strukt.topologia0o">topologia strukturo.</ref>
       </snc>
       <trd lng="en">topology</trd>
       <trd lng="fr">topologie</trd>
       <trd lng="ru">&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ja;</trd>
     </drv>
   </art>

