<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id$">
<kap>
<rad>topologi</rad>/o
</kap>
<drv mrk="topolo.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="topolo.0o.fako">
    <fnt><bib>PIV1</bib></fnt>
    <dif>
      Bran&ccirc;o de <ref tip="malprt" cel="matema.0o">matematiko</ref>,
      kiu okupi&gcirc;as &ccirc;efe pri distanco, kontinueco, limeso,
      konver&gcirc;o, ks
    </dif>
    <rim>
      Historie <tld/>o studis, kiel konservi&gcirc;as la ecoj de
      geometriaj figuroj dum kontinuaj transformi&gcirc;oj. Danke al
      la nocio <ctl>topologia strukturo</ctl> nun eblas paroli pri
      kontinueco anka&ubreve; en spacoj pli &gcirc;eneralaj ol la metrikaj.
      <tld lit="T"/>o provizas gravajn ilojn kaj nociojn al aliaj
      matematikaj bran&ccirc;oj, precipe al analitiko.
    </rim>
  </snc>
  <snc mrk="topolo.0o.strukturo">
    <fnt><bib>MatStokTerm</bib><lok>p. 53</lok></fnt>
    <dif>
      <klr>(super aro <em>E</em>)</klr>
      Tia <ref tip="super" cel="ar.0o.MAT">aro</ref> <em>T</em> da
      subaroj de <em>E</em>, ke
      la malplena aro kaj <em>E</em> apartenas al &gcirc;i,
      kaj ke &ccirc;iu <ref cel="kun.0ajxo.aro">kuna&jcirc;o</ref>
      de arbitra nombro da &gcirc;iaj elementoj kaj &ccirc;iu
      <ref cel="komun.0ajxo.aro">komuna&jcirc;o</ref> de finia nombro
      da &gcirc;iaj elementoj apartenas al &gcirc;i:
      <ekz>
        la elementojn de <tld/>o oni nomas malfermitaj subaroj;
      </ekz>
      <ekz>
        <ind>diskreta <tld/>o</ind> <klr>(konsistanta el &ccirc;iuj
        subaroj de <em>E</em>)</klr>
        <fnt><bib>MatVort</bib></fnt>;
        <trd lng="de">diskrete <ind>Topologie</ind></trd>
        <trd lng="en">discrete <ind>topology</ind></trd>
        <trd lng="fr">topologie discr&egrave;te</trd>
        <trd lng="ru">&c_d;&c_i;&c_s;&c_k;&c_r;&c_je;&c_t;&c_n;&c_a;&c_ja;
        <ind>&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ja;</ind></trd>
      </ekz>
      <ekz>
        <ind>maldiskreta <tld/>o</ind> <klr>(konsistanta nur el <em>E</em>
        kaj la malplena aro)</klr>
        <fnt><bib>MatVort</bib></fnt>;
        <trdgrp lng="de">
          <trd>indiskrete <ind>Topologie</ind></trd>,
          <trd>triviale <ind>Topologie</ind></trd>
        </trdgrp>
        <trdgrp lng="en">
          <trd>indiscrete <ind>topology</ind></trd>,
          <trd>trivial <ind>topology</ind></trd>
        </trdgrp>
        <trd lng="fr">topologie grossi&egrave;re</trd>
        <trd
        lng="ru">&c_t;&c_r;&c_i;&c_v;&c_i;&c_a;&c_l;&c_mol;&c_n;&c_a;&c_ja;
        &c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ja;</trd>
      </ekz>
      <ekz>
        <tld/>o difinita per <ref cel="metrik.0o.MAT">metriko</ref>,
      </ekz>
      <ekz>
        per <ref cel="norm.0o.MAT">normo</ref>,
      </ekz>
      <ekz>
        per aro de <ref cel="norm.duon0o">duonnormoj</ref>;
      </ekz>
      <ekz>
        <tld/>o super <em>E</em>, difinita per aro <em>A</em> de subaroj de
        <em>E</em> <klr>(<tld/>o, kies bazon konsistigas &ccirc;iuj finiaj
        komuna&jcirc;oj de elementoj en
        <em>A</em>&#8746;{&#8709;,<em>E</em>})</klr>;
      </ekz>
      <ekz>
        <tld/>o super <em>E</em>, difinita per aro de bildigoj al iu
        <tld/>a spaco <klr>(<tld/>o, kies bazon konsistigas &ccirc;iuj
        inversaj bildoj de malfermita aro per bildigo el la aro)</klr>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="strukt.topologia0o"><tld/>a strukturo</ref>;
    </refgrp>
    <refgrp tip="sub">
      Specifaj topologioj:
      <ref cel="topolo.0o.de_simpla_konvergxo"><tld/>o de simpla
      konver&gcirc;o</ref>,
      <ref cel="topolo.0o.de_unuforma_konvergxo"><tld/>o de unuforma
      konver&gcirc;o</ref>,
      <ref cel="topolo.malforta0o">malforta <tld/>o</ref>,
      <ref cel="topolo.dualmalforta0o">dualmalforta <tld/>o</ref>;
    </refgrp>
    <refgrp tip="vid">
      Rilataj nocioj:
      <ref cel="baz.0o.topologio">bazo</ref>,
      <ref cel="fajn.pli0a.topologio">pli fajna</ref>;
      rilataj subaroj:
      <ref cel="ferm.mal0ita.topologio">malfermita subaro</ref>,
      <ref cel="ferm.0ita.topologio">fermita subaro</ref>,
      <ref cel="cxirka.0ajxo.topologio">&ccirc;irka&ubreve;a&jcirc;o</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Topologie</trd>
  <trd lng="en">topology</trd>
  <trd lng="fr">topologie</trd>
  <trd lng="nl">topologie</trd>
  <trd lng="ru">&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ja;</trd>
</drv>

<drv mrk="topolo.0a">
  <kap><tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="topolo.0a.gxenerale">
    <dif>
      Rilata al <tld/>o <sncref ref="topolo.0o.fako"/>
      a&ubreve; al la karakterizaj ecoj,
      pri kiuj tiu &ccirc;i fako okupi&gcirc;as:
      <ekz>
        kontinueco estas <tld/>a eco de bildigo.
      </ekz>
    </dif>
    <trd lng="de">topologisch</trd>
    <trd lng="en">topological</trd>
    <trd lng="fr">topologique</trd>
    <trd
    lng="ru">&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  </snc>
  <snc mrk="topolo.0a.spaco">
    <ref tip="vid" cel="spac.topologia0o"><tld/>a spaco.</ref>
  </snc>
  <snc>
    <dif>
      Provizita per tia
      <ref cel="topolo.0o.strukturo">
      <tld/>o <sncref ref="topolo.0o.strukturo"/>
      </ref>, ke:
    </dif>
    <subsnc mrk="topolo.0a.grupo">
      <dif>
        <klr>(p.p. <ref cel="grup.0o.MAT">grupo</ref>)</klr>
        la bildigo xTy<sup>-1</sup> estu
        <ref cel="kontin3.0a.cxie">kontinua</ref>;
      </dif>
    </subsnc>
    <subsnc mrk="topolo.0a.ringo">
      <dif>
        <klr>(p.p. <ref cel="ring.0o.MAT">ringo</ref>)</klr>
        la bildigoj xT(-y) kaj x*y estu
        <ref cel="kontin3.0a.cxie">kontinuaj</ref>;
      </dif>
    </subsnc>
    <subsnc mrk="topolo.0a.modulo">
      <dif>
        <klr>(p.p. <ref cel="modul.0o.strukt">modulo</ref>
        super <ref cel="topolo.0a.ringo"><tld/>a</ref> ringo)</klr>
        la bildigoj x-y kaj &alfa;*x estu
        <ref cel="kontin3.0a.cxie">kontinuaj</ref>.
      </dif>
    </subsnc>
    <trd lng="de">topologisch</trd>
    <trd lng="en">topological</trd>
    <trd lng="fr">topologique</trd>
    <trd
    lng="ru">&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  </snc>
</drv>

<drv mrk="topolo.malforta0o">
  <kap>malforta <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(super <ref cel="topolo.0a.modulo"><tld/>a</ref>
      <ref cel="spac.vektora0o">vektora spaco</ref> <em>E</em>)</klr>
      La <ref tip="super" cel="topolo.0o.strukturo"><tld/>o</ref>,
      difinita per la aro de &ccirc;iuj
      <ref cel="kontin3.0a.cxie">kontinuaj</ref>
      <ref cel="linear.0a.homomorfio">linearaj</ref>
      <ref cel="form.0o.bildigo">formoj</ref> super &gcirc;i <klr>(alidire: per
      &gcirc;ia <ref cel="dual.topologia0o"><tld/>a dualo</ref>)</klr>:
      <ekz>
        la malforta <tld/>o estas la malplej fajna <tld/>o, kiu igas
        kontinuaj la elementojn de la topologia dualo <em>E</em>';
      </ekz>
      <ekz>
        por finidimensia normohava spaco la malforta <tld/>o identas kun tiu,
        difinita per la normo;
      </ekz>
    </dif>
    <rim>
      Kontraste kun la malforta, oni ofte referencas al la origina
      <tld/>o de <em>E</em> nomante &gcirc;in <ctl>forta</ctl>. En multaj
      aplikoj la forta <tld/>o estas difinita per normo.
    </rim>
  </snc>
  <trd lng="de">schwache <ind>Topologie</ind></trd>
  <trd lng="en">weak <ind>topology</ind></trd>
  <trd lng="fr">topologie faible</trd>
  <trd lng="ru">&c_s;&c_l;&c_a;&c_b;&c_a;&c_ja;
  <ind>&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ja;</ind></trd>
</drv>

<drv mrk="topolo.dualmalforta0o">
  <kap>dualmalforta <tld/>o, *-malforta <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(super <ref cel="dual.topologia0o"><tld/>a dualo</ref> de
      <em>E</em>')</klr>
      La <ref tip="super" cel="topolo.0o.strukturo"><tld/>o</ref>,
      difinita per la aro de &ccirc;iuj bildigoj
      &theta;<sub>x</sub> (x&#8712;<em>E</em>), kiuj &jcirc;etas elementon
      &phi; de la dualo al &phi;(x):
      <ekz>
        la dualmalforta <tld/>o identas kun la <tld/>o de simpla
        konver&gcirc;o;
      </ekz>
      <ekz>
        la origina topologio de la topologia dualo de normohava spaco estas
        pli fajna, ol la dualmalforta.
      </ekz>
    </dif>
    <rim>
      La naciaj lingvoj &scirc;ajnas heziti, &ccirc;u la stelo simbolanta
      dualecon apliki&gcirc;as al <ctl>topologio</ctl> a&ubreve;
      <ctl>malforta</ctl>. Ni preferis la duan solvon por eviti, ke
      krei&gcirc;u termino <ctl>dual<tld/>o</ctl> sen aparta memstara
      senco, krom eble <ctl><tld/>o de la dualo</ctl>, kiu estus
      problema, &ccirc;ar <ctl>malforta <tld/>o de la dualo</ctl> kaj
      <ctl>dualmalforta <tld/>o</ctl> ne nepre identas. Sed necesas agnoski,
      ke <ctl>dualmalforta</ctl> ne estas kontentiga kunmeta&jcirc;o.
    </rim>
  </snc>
  <trd lng="de">schwache *-<ind>Topologie</ind></trd>
  <trd lng="en">weak* <ind>topology</ind></trd>
  <trdgrp lng="fr">
    <trd>topologie *-faible</trd>,
    <trd>topologie faible *</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_l;&c_a;&c_b;&c_a;&c_ja; *
  <ind>&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ja;</ind></trd>
</drv>

<drv mrk="topolo.0o.de_simpla_konvergxo">
  <kap><tld/>o de simpla konver&gcirc;o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(super aro de funkcioj)</klr>
      <ref tip="super" cel="topolo.0o.strukturo"><tld lit="T"/>o</ref>,
      rilate al kiu vico de funkcio estas
      <ref cel="konver.0a.MAT">konver&gcirc;a</ref>, se kaj nur se &gcirc;i
      estas <ref cel="konver.simple0a">simple konver&gcirc;a</ref>.
    </dif>
  </snc>
  <trd lng="de">Topologie der punktweisen Konvergenz</trd>
  <trd lng="en">topology of pointwise convergence</trd>
  <trd lng="fr">topologie de la convergence simple</trd>
  <trd lng="ru">&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ja;
  &c_p;&c_r;&c_o;&c_s;&c_t;&c_o;&c_j;
  &c_s;&c_h;&c_o;&c_d;&c_i;&c_m;&c_o;&c_s;&c_t;&c_i;</trd>
</drv>

<drv mrk="topolo.0o.de_unuforma_konvergxo">
  <kap><tld/>o de unuforma konver&gcirc;o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(super aro de funkcioj al metrika spaco)</klr>
      <ref tip="super" cel="topolo.0o.strukturo"><tld lit="T"/>o</ref>,
      difinita per la metriko, kiu difinas distancon inter du funkcioj per
      la supremo de la distancoj inter &gcirc;iaj valoroj.
    </dif>
    <ref tip="vid" cel="konver.unuforme0a">unuforme konver&gcirc;a.</ref>
  </snc>
  <trd lng="de">Topologie der gleichm&auml;&szlig;en Konvergenz</trd>
  <trd lng="en">topology of uniform convergence</trd>
  <trd lng="fr">topologie de la convergence uniforme</trd>
  <trd lng="ru">&c_t;&c_o;&c_p;&c_o;&c_l;&c_o;&c_g;&c_i;&c_ja;
  &c_r;&c_a;&c_v;&c_n;&c_o;&c_m;&c_je;&c_r;&c_n;&c_o;&c_j;
  &c_s;&c_h;&c_o;&c_d;&c_i;&c_m;&c_o;&c_s;&c_t;&c_i;</trd>
</drv>
