<art mrk="$Id: astron.xml,v 1.27 2023/10/13 17:08:38 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>astronom</rad>/o
</kap>
<drv mrk="astron.0o">
  <kap><tld/>o</kap>
  <snc>
    <uzo tip="fak">AST</uzo>
    <dif>
      Specialisto pri <ref tip="vid" cel="astron1.0o"><tld/>io</ref>:
      <ekz>
        lastatempe a&ubreve;di&gcirc;as pledoj de <tld/>oj, ke okazu ampleksa
        kalendar-reformo
        <fnt>
          <aut>Evgeni Georgiev</aut>,
          <vrk>&Ccirc;u kalendar-reformo estos bezonata?</vrk>,
          <bib>Monato</bib>,
          <lok>jaro 1998a, numero 2a, p. 11a</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="astron1.0isto">astronomiisto</ref>
    <rim>
    Eblas anka&ubreve; trovi (sed ne en PIV) la sinoniman terminon
    <em>astronomiisto</em>
    <fnt>
      <aut>Vikipedio</aut>,
      <vrk><url ref="&Viki;/Astronomo">Astronomo</url></vrk>
    </fnt>,
    logike konstruitan per la sufikso IST el la radiko <tld/>/o.
    Tamen, pro la longeco de tia vorto, kaj pro la malagrabla duobla
    &rightquot;i&#x201D;, oni normale preferas la sensufiksan vorton
    <ekz><tld/>o</ekz>
    <fnt>
      <aut>PMEG</aut>,
      <vrk><url ref="&PMEG;vortfarado/neoficialaj_afiksoj/sufiksoj/i.html">39.1.12.
      Neoficiala sufikso I</url></vrk>
    </fnt>.
    </rim>
  </snc>
  <trd lng="be">&c_a;&c_s;&c_t;&c_r;&c_a;&c_n;&c_o;&c_m;</trd>
  <trd lng="cs">astronom</trd>
  <trdgrp lng="de">
    <trd>Astronom</trd>,
    <trd>Sternenkundler</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>astronomer</trd>
  </trdgrp>
  <trd lng="es">astr&oacute;nomo</trd>
  <trdgrp lng="fa">
    <trd>&a_A;&a_kh;&a_t;&a_r;&a_sh;&a_n;&a_A;&a_s;</trd>,
    <trd>&a_m;&a_n;&a_j;&a_m;</trd>
  </trdgrp>
  <trd lng="fr">astronome</trd>
  <trd lng="he">&#x5D0;&#x5B7;&#x5E1;&#x5D8;&#x5E8;&#x5D5;&#x5B9;&#x5E0;&#x5D5;&#x5B9;&#x5DD;</trd>
  <trdgrp lng="hu">
    <trd>csillag&aacute;sz</trd>,
    <trd>asztron&oacute;mus</trd>
  </trdgrp>
  <trd lng="it">astronomo</trd>
  <trd lng="ja">&#x5929;&#x6587;&#x5B66;&#x8005;  <pr>&#x3066;&#x3093;&#x3082;&#x3093;&#x304C;&#x304F;&#x3057;&#x3083;</pr></trd>
  <trd lng="nl">astronoom</trd>
  <trd lng="ru">&c_a;&c_s;&c_t;&c_r;&c_o;&c_n;&c_o;&c_m;</trd>
  <trdgrp lng="sk">
    <trd>astron&oacute;m</trd>,
    <trd>astron&oacute;m</trd>
  </trdgrp>
  <trd lng="sv">astronom</trd>
  <trd lng="uk">&#x430;&#x441;&#x442;&#x440;&#x43E;&#x43D;&#x43E;&#x43C;</trd>
</drv>
</art>
