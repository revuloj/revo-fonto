<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: karit.xml,v 1.24 2023/12/03 08:00:23 revo Exp $">
<kap>
  <rad>karit</rad>/o <fnt><bib>PV</bib></fnt>,
  <var><kap><rad var="at">karitat</rad>/o</kap></var>
</kap>
<drv mrk="karit.0o">
  <kap><tld/>o, <var><kap><tld var="at"/>o</kap></var></kap>
  <snc mrk="karit.0o.KRI">
    <uzo tip="fak">KRI</uzo>
    <dif>
      <ref tip="super" cel="am.0o">Amo</ref> al Dio kaj al la proksimulo:
      <ekz>
        ne via dol&ccirc;humana <tld/>o logas min / sed la terura devo
        <fnt>
          <aut>A. M. de Guerra Junqueiro, trad. L. H. Knoedt</aut>,
          <vrk><url ref="http://donh.best.vwh.net/Esperanto/Literaturo/Revuoj/MondaKulturo/Auxtuno65/karitatou.html">La
          Karitato kaj la justeco</url></vrk>,
          <lok>Monda Kulturo, a&ubreve;tuno 1965, p. 97a-98a</lok>
        </fnt>;
      </ekz>
      <ekz>
        &gcirc;enerala sekretario de UN <nom>Kofi Annan</nom> la&ubreve;dis, ke en pli ol 2&#x202F;500
        jaroj post sia naski&gcirc;o, Budaismo disvastigas ideon de <tld var="at"/>o,
        kompreno kaj respekto
        <fnt>
        <aut>&Ccirc;ina Radio Internacia</aut>,
        <vrk><url ref="http://es.chinabroadcast.cn/1/2006/04/13/1@36789.htm">La
        &ccirc;ina registaro unuafoje...</url></vrk>,
        <lok>2006-04-13</lok>
        </fnt>;
      </ekz>
      <ekz>
        per elano de <tld var="at"/>o li oferis sian vivon de pastro inter&scirc;an&gcirc;e
        kun tiu de patro de familio, lia kunulo en kaptiteco
        <fnt>
        <vrk><url ref="http://www.ikue.org/sanktuloj/kolbe.htm">Sankta
        Maksimilano Maria Kolbe</url></vrk>,
        <lok>[vidita je 2006-04-14]</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_m;&c_ib;&c_l;&c_a;&c_s;&c_e;&c_r;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
  <trd lng="ca">caritat</trd>
  <trdgrp lng="cs">
    <trd>charita</trd>,
    <trd>l&aacute;ska</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>christliche <ind>N&auml;chstenliebe</ind></trd>,
    <trd>Barmherzigkeit</trd>,
    <trd>Karitas</trd>,
    <trd>Caritas</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>benevolence</trd>,
    <trd>benignance</trd>,
    <trd>goodwill</trd>,
    <trd>Christian <ind>love</ind> of fellow men</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>amour du prochain</trd>,
    <trd>charit&eacute;</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>felebar&aacute;ti <ind>szeretet</ind></trd>,
    <trd>karit&aacute;sz</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x611B;&#x5FB3;  <pr>&#x3042;&#x3044;&#x3068;&#x304F;</pr></trd>,
    <trd>&#x30AB;&#x30EA;&#x30BF;&#x30B9;</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>naastenliefde</trd>,
    <trd>caritas</trd>
  </trdgrp>
  <trd lng="pl">mi&lstroke;osierdzie</trd>
  <trd lng="pt">caridade</trd>
  <trd lng="ro">mizericordie</trd>
  <trdgrp lng="ru">
    <trd>&c_m;&c_i;&c_l;&c_o;&c_s;&c_je;&c_r;&c_d;&c_i;&c_je;</trd>,
    <trd>&c_l;&c_ju;&c_b;&c_o;&c_v;&c_mol; &c_k; &c_b;&c_l;&c_i;&c_zh;&c_n;&c_je;&c_m;&c_u;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>charita</trd>,
    <trd>l&aacute;ska</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x43C;&c_i;&#x43B;&#x43E;&c_s;&c_je;&c_r;&c_d;&#x44F;</trd>,
    <trd>&#x43B;&#x44E;&c_b;&#x43E;&c_v; &c_d;&#x43E; &c_b;&#x43B;&c_i;&c_zh;&#x43D;&#x44C;&#x43E;&c_g;&#x43E;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x4EC1;&#x611B; <pr>r&#xE9;n&#xE0;i</pr></trd>,
    <trd>&#x4EC1;&#x672F; <pr>r&#xE9;nsh&#xF9;</pr></trd>,
    <trd>&#x5584;&#x5FC3; <pr>sh&#xE0;nx&#x12B;n</pr></trd>,
    <trd>&#x4EC1;&#x6148; <pr>r&#xE9;nc&#xED;</pr></trd>
  </trdgrp>
</drv>

<drv mrk="karit.0a">
  <kap>
    <tld/>a, <var><kap><tld var="at"/>a</kap></var>
  </kap>
  <snc mrk="karit.0a.pro_karitato">
    <dif>
      Pro <tld var="at"/>o:
      <ekz>
        <tld var="at"/>a aktivado
        <fnt>
          <bib>Monato</bib>
          <aut>last</aut>
          <vrk><url ref="&Monato;/2010/010116.php">Eklezia ludo kondamnita</url></vrk>
          <lok>2010</lok>
        </fnt>;
      </ekz>
      <ekz>
        religia <tld var="at"/>a socialhelpa medio
        <fnt>
          <aut>Pejno Simono</aut>
          <vrk><url ref="&Monato;/2001/007110.php">Atentokapta sed ru&gcirc;krajoninda</url></vrk>
          <bib>Monato</bib>
          <lok>2001/01, p. 31</lok>
          </fnt>;
      </ekz>
      <ekz>
        humanaj kaj <tld var="at"/>aj organiza&jcirc;oj
        <fnt>
          <bib>Monato</bib>
          <aut>Stefan Maul</aut>
          <vrk><url ref="&Monato;/2005/008551.php">Ondego da helpemo</url></vrk>
          <lok>2005</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="filant2.0a">filantropia</ref>,
      <ref cel="humanitar.0a">humanitara</ref>,
      <ref cel="hom.0ama">homama</ref>,
      <ref cel="altrui.0a">altruisma</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_m;&c_ib;&c_l;&c_a;&c_s;&c_e;&c_r;&c_n;&c_y;</trd>
  <trd lng="de">karitativ</trd>
  <trdgrp lng="uk">
    <trd>&c_h;&c_a;&c_r;&c_i;&c_t;&c_a;&c_t;&c_i;&c_v;&#x43D;&c_i;&c_j;</trd>,
    <trd>&#x43C;&c_i;&#x43B;&#x43E;&c_s;&c_je;&c_r;&c_d;&#x43D;&c_i;&c_j;</trd>,
    <trd>&c_d;&#x43E;&c_b;&c_r;&#x43E;&c_ch;&c_i;&#x43D;&#x43D;&c_i;&c_j;</trd>
  </trdgrp>
</drv>

</art>
