    <trd>odozva</trd>,
    <trd>ohlas</trd>,
    <trd>reflex</trd>
  </trdgrp>
  <trd lng="uk">&c_r;&c_je;&c_f;&#x43B;&c_je;&#x43A;&c_s;</trd>
