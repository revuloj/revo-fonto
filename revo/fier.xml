  <rad>fier</rad>/a 
</kap>
<drv mrk="fier.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc mrk="fier.0a.pozitive">
    <dif>
      Konscia pri siaj meritoj:
      <ekz>
        modesta, sed nobla, <tld/>a homo;
      </ekz>
      <ekz>
        kun <tld/>a kura&gcirc;o;
      </ekz>
      <ekz>
        ili estos <tld/>aj pri tiu nomo de utopiistoj
        <fnt>
          <bib>Paroloj</bib>
          <vrk>Parolado anta&ubreve; la Dua Kongreso Esperantista en
          Gen&egrave;ve</vrk>
          <lok>1906</lok>
        </fnt>;
      </ekz>
      <ekz>
        vi rajtas esti <tld/>a pri tia filo;
      </ekz>
      <ekz>
        mieno <tld/>a al ludo mizera
        <klr>(&scirc;ajnigi sin kontenta pri tio, kion oni ne povas
        eviti)</klr>;
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>a kavalira kastelo
        <fnt>
          <bib>Fab3</bib>
          <lok>Nokta &ccirc;apo de fra&ubreve;lo</lok>
        </fnt>.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_g;&c_a;&c_n;&c_a;&c_r;&c_l;&c_ib;&c_v;&c_y;</trd>,
      <trd>&c_g;&c_o;&c_r;&c_d;&c_y;</trd>
    </trdgrp>
    <trd lng="de">stolz</trd>
    <trd lng="hu">b&uuml;szke</trd>
    <trdgrp lng="ru">
      <trd>&c_g;&c_o;&c_r;&c_d;&c_y;&c_j;</trd>,
      <trd>&c_g;&c_o;&c_r;&c_d;&c_je;&c_l;&c_i;&c_v;&c_y;&c_j;</trd>
    </trdgrp>
  </snc>
  <snc mrk="fier.0a.trofiera">
    <dif>
      <ref tip="sub" cel="humil.mal0a.PSI">Malhumila</ref>,
      tro sin &scirc;atanta, <ref tip="sub" cel="arogan.0a">aroganta</ref>:
      <ekz>
        humila kun la superuloj, kaj <tld/>a kun la subuloj;
      </ekz>
      <ekz>
        &scirc;i estis bela virino, sed <tld/>a kaj malmodesta
        <fnt>
          <bib>ElektFab</bib>
          <lok>Ne&gcirc;ulino</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi rompos vian <tld/>an obstinecon
        <fnt><bib>MT</bib> <lok>&Lev; 26:19</lok></fnt>;
      </ekz>
      <ekz>
        <klr>[li]</klr> fiere rigardas de supre la aliajn
        <fnt>
          <bib>Fab2</bib>
          <lok>Ru&gcirc;aj &scirc;uoj</lok>
        </fnt>;
      </ekz>
      <ekz>
        la ri&ccirc;i&gcirc;o tiel <ind><tld/>igi</ind>s lin, ke li ne plu min
        salutas.
        <trdgrp lng="fr">
          <trd>flatter<klr tip="ind"> (rendre orgueille&ubreve;)</klr></trd>,
          <trd>enorgueillir</trd>
        </trdgrp>
        <trd lng="hu">b&uuml;szk&eacute;v&eacute; tesz</trd>
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="fanfar1.0i">fanfaroni</ref>,
      <ref cel="modest">malmodesta</ref>,
      <ref cel="fid.mem0o">memfida</ref>,
      <ref cel="vant.0a">vanta</ref>
    </refgrp>
    <trdgrp lng="be">
      <trd>&c_g;&c_a;&c_n;&c_a;&c_r;&c_y;&c_s;&c_t;&c_y;</trd>,
      <trd>&c_p;&c_a;&c_g;&c_a;&c_r;&c_d;&c_l;&c_ib;&c_v;&c_y;</trd>,
      <trd>&c_p;&c_y;&c_h;&c_l;&c_ib;&c_v;&c_y;</trd>,
      <trd>&c_f;&c_a;&c_n;&c_a;&c_b;&c_e;&c_r;&c_y;&c_s;&c_t;&c_y;</trd>
    </trdgrp>
    <trd lng="de">&uuml;berheblich</trd>
    <trd lng="en">haughty</trd>
    <trd lng="he">&yod;&he;&yod;&resh;</trd>
    <trd lng="hu">r&aacute;tarti</trd>
    <trdgrp lng="ru">
      <trd>&c_v;&c_y;&c_s;&c_o;&c_k;&c_o;&c_m;&c_je;&c_r;&c_n;&c_y;&c_j;</trd>,
      <trd>&c_n;&c_a;&c_d;&c_m;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
    </trdgrp>
  </snc>
  <trd lng="bo">&#xF51;&#xFB2;&#xF42;&#xF0B;&#xF54;&#xF7C;&#xF0B;</trd>
  <trdgrp lng="cs">
    <trd>hrd&yacute;</trd>,
    <trd>py&scaron;n&yacute;</trd>
  </trdgrp>
  <trd lng="en">proud</trd>
  <trd lng="es">orgulloso, -a</trd>
  <trdgrp lng="fr">
    <trd>fier</trd>,
    <trd>hautain</trd>,
    <trd>vanite&ubreve;</trd>
  </trdgrp>
  <trd lng="he">&gimel;&alef;&he;</trd>
  <trd lng="id">bangga</trd>
  <trd lng="nl">trots</trd>
  <trdgrp lng="pt">
    <trd>orgulhoso</trd>,
    <trd>altivo</trd>,
    <trd>emproado</trd>,
    <trd>ufano</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>hrd&yacute;</trd>,
    <trd>py&scaron;n&yacute;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_g;&#x43E;&c_r;&c_d;&c_i;&c_j;</trd>,
    <trd>&c_z;&c_a;&c_r;&#x43E;&c_z;&c_u;&#x43C;&c_ib;&#x43B;&c_i;&c_j;</trd>,
    <trd>&c_g;&#x43E;&c_r;&c_d;&#x43E;&c_v;&c_i;&c_t;&c_i;&c_j;</trd>
  </trdgrp>
</drv>

<drv mrk="fier.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="fier.0i.KOMUNE">
    <dif>
      Esti <tld/>a:
      <ekz>
        li <tld/>as pro sia forteco;
      </ekz>
      <ekz>
        en feli&ccirc;o ne <tld/>u en malfeli&ccirc;o esperu
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        kiu ri&ccirc;i&gcirc;as, tiu <tld/>i&gcirc;as
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
      <ekz>
        mi havas nenion, pri kio <tld/>i
        <fnt>
          <bib>NT</bib>
          <lok>&Ko1; 9:16</lok>
        </fnt>;
      </ekz>
      <ekz>
        Irlando <tld/>as pri sia reputacio
        <fnt>
          <bib>Monato</bib>
          <aut>Garbhan Macaoidh</aut>
          <vrk><url ref="&Steloj;monato2/007170.html">Ni hontas
          kaj postulas</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        mi tute ne <tld/>as pri la nekonsekvencaj kaj hipokritaj
        <klr>[&#8230;]</klr>
        politikistoj en miaj nunaj patrolandoj
        <fnt>
          <bib>Monato</bib>
          <aut>Zlatko Ti&scaron;ljar</aut>
          <vrk><url ref="https://www.monato.net/2004/008291.html">Kial
          fieri pri iu patrujo kaj ne pri alia?</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        la manksa popolo estas aparta komunumo kun apartaj valoroj kaj
        kulturo, pri kiuj
        ili <tld/>as
        <fnt>
          <bib>Monato</bib>
          <aut>Garbhan MacAoidh</aut>
          <vrk><url ref="https://www.monato.net/2006/008740.php">Revivi&gcirc;o de
          mortinta lingvo</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="fanfar1.0i">fanfaroni</ref>,
      <ref cel="parad.0i">paradi</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_g;&c_a;&c_n;&c_a;&c_r;&c_y;&c_c;&c_c;&c_a;</trd>
  <trdgrp lng="cs">
    <trd>b&yacute;t hrd&yacute;</trd>,
    <trd>b&yacute;t py&scaron;n&yacute;</trd>,
    <trd>chlubit se</trd>,
    <trd>honosit se</trd>,
    <trd>py&scaron;nit se</trd>
  </trdgrp>
  <trd lng="de">stolz sein</trd>
  <trd lng="en">be <ind>proud</ind></trd>
  <trdgrp lng="es">
    <trd>estar orgulloso, -a</trd>,
    <trd>enorgullecerse</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>&ecirc;tre <ind>fier</ind> (de)</trd>,
    <trd>tirer <ind>fiert&eacute;</ind> (de)</trd>
  </trdgrp>
  <trd lng="he">&lamed;<ind>&he;&tav;&gimel;&alef;&vav;&tav;</ind></trd>
  <trdgrp lng="hu">
    <trd>b&uuml;szke</trd>,
    <trd>b&uuml;szk&eacute;lkedik</trd>
  </trdgrp>
  <trd lng="id">ber<ind>bangga</ind></trd>
  <trd lng="nl">trots zijn</trd>
  <trd lng="ru">&c_g;&c_o;&c_r;&c_d;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
  <trdgrp lng="sk">
    <trd>honosi&tcaron; sa</trd>,
    <trd>p&yacute;&scaron;i&tcaron; sa</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x43F;&c_i;&c_sh;&c_a;&c_t;&c_i;&c_s;&#x44F;</trd>,
    <trd>&c_g;&#x43E;&c_r;&c_d;&c_i;&c_t;&c_i;&c_s;&#x44F;</trd>
  </trdgrp>
</drv>

<drv mrk="fier.0o">
  <kap>
    <tld/>o
  </kap>
  <snc mrk="fier.0o.fiera&jcirc;o">
    <dif>
      <tld lit="F"/>a&jcirc;o:
      <ekz>
        tiuj herooj <klr>[estas]</klr> la <tld/>o
        <klr>(<tld/>inda&jcirc;o, glora&jcirc;o)</klr>
        de Italujo
        <fnt><bib>Fab1</bib>, <lok>Kupra porko</lok></fnt>.
      </ekz>
      <ekz>
        li, &scirc;ia tuta <tld/>o sur la tero
        <fnt>
          <bib>Fab4</bib>
          <lok>Anneto</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="fier.0o.fiereco">
    <dif>
      <tld lit="F"/>eco:
      <ekz>
        <klr>[li]</klr> parolas arogante kontra&ubreve; piulo, kun <tld/>o kaj
        malestimo
        <fnt>
          <bib>MT</bib>
          <lok>&Psa; 31:18</lok>
        </fnt>;
      </ekz>
      <ekz>
        plena de <tld/>o
        <fnt>
          <bib>Fab4</bib>
          <lok>Filino de la mar&ccirc;a re&gcirc;o</lok>
        </fnt>;
      </ekz>
      <ekz>
        la envio kaj <tld/>o kreskis kvaza&ubreve; malbonaj herboj en &scirc;ia koro
        <fnt>
          <bib>ElektFab</bib>
          <lok>Ne&gcirc;ulino</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Stolz</trd>
  <trd lng="id">ke<ind>bangga</ind>an</trd>
</drv>



<drv mrk="fier.0a&jcirc;o">
  <kap><tld/>a&jcirc;o</kap>
  <snc mrk="fier.0a&jcirc;o.KOMUNE">
    <dif>
      Tio, pro kio oni estas <tld/>a:
      <ekz>
        ne parolu plu <tld/>a&jcirc;on
        <fnt>
          <bib>MT</bib>
          <lok>&Sa1; 2:3</lok>
        </fnt>;
      </ekz>
      <ekz>
        estus pli bone por mi morti, ol se iu vantigus mian <tld/>a&jcirc;on
        <fnt>
          <bib>NT</bib>
          <lok>&Ko1; 9:15</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_g;&c_o;&c_n;&c_a;&c_r;</trd>
  <trdgrp lng="cs">
    <trd>hrdost</trd>,
    <trd>p&yacute;cha</trd>
  </trdgrp>
  <trd lng="de">Stolz</trd>
  <trd lng="en">pride</trd>
  <trd lng="fr">fiert&eacute;<klr tip="ind"> (chose)</klr></trd>
  <trd lng="he">&gimel;&alef;&vav;&vav;&he;</trd>
  <trd lng="hu">b&uuml;szkes&eacute;g<klr tip="ind"> (dolog)</klr></trd>
  <trd lng="id">ke<ind>bangga</ind>an</trd>
  <trd lng="nl">trots<klr tip="ind"> (ding)</klr></trd>
  <trd lng="ru">&c_g;&c_o;&c_r;&c_d;&c_o;&c_s;&c_t;&c_mol;
  <klr>(&c_t;&c_o;, &c_ch;&c_je;&c_m; &c_g;&c_o;&c_r;&c_d;&c_ja;&c_t;&c_s;&c_ja;)</klr></trd>
  <trdgrp lng="sk">
    <trd>hrdos&tcaron;</trd>,
    <trd>p&yacute;cha</trd>
  </trdgrp>
</drv>

<drv mrk="fier.0eco">
  <kap><tld/>eco</kap>
  <snc mrk="fier.0eco.KOMUNE">
    <dif>
      Eco de <tld/>ulo:
      <ekz>
        kun &gcirc;ojo kaj <tld/>eco mi konstatas, ke vi &ccirc;iam montris
        al mi konfidon
        <fnt>
          <bib>Paroloj</bib>
          <vrk>Parolado anta&ubreve; la Oka Kongreso Esperantista en
          Krakow</vrk>
          <lok>1912</lok>
        </fnt>;
      </ekz>
      <ekz>
        anta&ubreve; la pereo iras <tld/>eco
        <fnt><bib>MT</bib> <lok>&Sen; 16:18</lok></fnt>;
      </ekz>
      <ekz>
        malaltigi ies <tld/>econ
      </ekz>
    </dif>
    <ref tip="lst" cel="sent.0o.emocio" lst="voko:sentoj">sento.</ref>
  </snc>
  <trdgrp lng="be">
    <trd>&c_g;&c_a;&c_n;&c_a;&c_r;&c_l;&c_ib;&c_v;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>,
    <trd>&c_g;&c_o;&c_r;&c_d;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="bo">&#xF44;&#xF0B;&#xF62;&#xF92;&#xFB1;&#xF63;&#xF0B;</trd>
  <trdgrp lng="cs">
    <trd>hrdost</trd>,
    <trd>p&yacute;cha</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Stolz</trd>,
    <trd>&Uuml;berheblichkeit</trd>
  </trdgrp>
  <trd lng="en">pride</trd>
  <trd lng="es">orgullo</trd>
  <trd lng="fr">fiert&eacute;<klr tip="ind"> (qualit&eacute;)</klr></trd>
  <trd lng="he">&gimel;&alef;&vav;&vav;&he;</trd>
  <trd lng="hu">b&uuml;szkes&eacute;g<klr tip="ind"> (&aacute;llapot)</klr></trd>
  <trd lng="id">ke<ind>bangga</ind>an</trd>
  <trd lng="nl">trots</trd>
  <trdgrp lng="ru">
    <trd>&c_g;&c_o;&c_r;&c_d;&c_o;&c_s;&c_t;&c_mol;
    <klr>(&c_k;&c_a;&c_ch;&c_je;&c_s;&c_t;&c_v;&c_o;)</klr></trd>,
    <trd>&c_v;&c_y;&c_s;&c_o;&c_k;&c_o;&c_m;&c_je;&c_r;&c_i;&c_je;</trd>,
    <trd>&c_n;&c_a;&c_d;&c_m;&c_je;&c_n;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>hrdos&tcaron;</trd>,
    <trd>p&yacute;cha</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_g;&#x43E;&c_r;&c_d;&c_ib;&c_s;&c_t;&#x44C;</trd>,
    <trd>&c_z;&c_a;&c_r;&#x43E;&c_z;&c_u;&#x43C;&c_ib;&#x43B;&c_ib;&c_s;&c_t;&#x44C;</trd>,
    <trd>&c_g;&#x43E;&c_r;&c_d;&#x43E;&c_v;&c_i;&c_t;&c_ib;&c_s;&c_t;&#x44C;</trd>
  </trdgrp>
</drv>

<drv mrk="fier.0inda">
  <kap><tld/>inda</kap>
  <snc mrk="fier.0inda.KOMUNE">
    <dif>
      Tia, ke pri &gcirc;i oni povas <tld/>i:
      <ekz>
        <tld/>inda&jcirc;o de la mondo, &gcirc;ojo de &ccirc;iuj generacioj
        <fnt>
          <bib>MT</bib>
          <lok>&Jes; 60:15</lok>
        </fnt>;
      </ekz>
      <ekz>
        estigi la patrujon sekura, prospera kaj <tld/>inda
        <fnt>
          <bib>Monato</bib>
          <aut>Kawai Yuka</aut>
          <vrk><url ref="https://www.monato.net/2013/011127.php">Lernu
          hitleran manieron ...</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        pri<tld/>inda estas la progreso en universitatoj kaj sciencaj
        esploroj
        <fnt>
          <bib>Monato</bib>
          <aut>Josef &Scirc;emer</aut>
          <vrk><url ref="https://www.monato.net/2008/009524.php">La juda
          &scirc;tato 60-jara</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        la persa lingvo <klr>[&#8230;]</klr> estas ega <tld/>inda&jcirc;o kaj firma
        fundamento de la
        nuntempa irana identeco
        <fnt>
          <bib>Monato</bib>
          <aut>Simone Zoppellaro</aut>
          <vrk><url ref="https://www.monato.net/2014/011224.php">Lingvo
          kiel sukero: notoj pri la nuntempa persa</url></vrk>
        </fnt>.
      </ekz>
<!-- ne trovi&gcirc;as tiuj cita&jcirc;oj
      <ekz>
        <ind>tio ne estas <tld/>inda</ind>
        <trd lng="es">no es digno,-a de orgullo</trd>
      </ekz>
      <ekz>
        <ind>tio ne estas <tld/>inda&jcirc;o</ind><fnt>Z</fnt>.
        <trd lng="en">that's nothing to be <ind>proud</ind> of</trd>
        <trd lng="fr">il n'y a pas de quoi s'en <ind>vanter</ind></trd>
        <trd lng="he">&alef;&yod;&fnun; &bet;&mem;&he; &lamed;<ind>&he;&tav;&gimel;&alef;&vav;&tav;</ind></trd>
        <trd lng="hu">nem ad okot a <ind>b&uuml;szkes&eacute;g</ind>re</trd>
        <trd lng="ru">&c_z;&c_d;&c_je;&c_s;&c_mol; &c_n;&c_je;&c_ch;&c_je;&c_m; &c_g;&c_o;&c_r;&c_d;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
      </ekz>
-->
    </dif>
    <refgrp tip="vid">
      <ref cel="glor.0o">gloro</ref>,
      <ref cel="honor.0o">honoro</ref>.
    </refgrp>
  </snc>
  <trd lng="cs">znamenit&yacute;</trd>
  <trd lng="es">digno,-a de orgullo</trd>
  <trd lng="fr">remarquable</trd>
  <trd lng="sk">znamenit&yacute;</trd>
</drv>

<drv mrk="fier.0ulo">
  <kap><tld/>ulo</kap>
  <snc mrk="fier.0ulo.KOMUNE">
    <dif>
      Homo <tld/>a:
      <ekz>
        <tld/>uloj tre forte min mokas
        <fnt>
          <bib>MT</bib>
          <lok>&Psa; 119:51</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>ulo ka&ubreve;zas malpacojn
        <fnt>
          <bib>MT</bib>
          <lok>&Sen; 28:25</lok>
        </fnt>;
      </ekz>
      <ekz>
        fenikopteroj, belaj rozkoloraj dupiedaj <tld/>uloj
        <fnt>
          <bib>Monato</bib>
          <aut>Angela Tellier</aut>
          <vrk><url ref="https://www.monato.net/2004/008306.html">La&ubreve;proverbaj
          fabeloj</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="pav.0o.FIG">pavo <sncref/></ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_g;&c_a;&c_n;&c_a;&c_r;&c_l;&c_ib;&c_v;&c_je;&c_c;</trd>
  <trdgrp lng="cs">
    <trd>furiant</trd>,
    <trd>namy&scaron;lenec</trd>
