    <ref tip="hom" cel="boler.0o">Bolero</ref> anka&ubreve; estas jaketo.
  </rim>
  <trd lng="be">&c_b;&c_a;&c_l;&c_je;&c_r;&c_o; <klr tip="amb">(&c_t;&c_a;&c_n;&c_je;&c_c;, &c_m;&c_e;&c_l;&c_jo;&c_d;&c_y;&c_ja;)</klr></trd>
