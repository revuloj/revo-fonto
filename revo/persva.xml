  <art mrk="$Id: persva.xml,v 1.24 2022/03/25 12:53:16 revo Exp $">
    <kap>
      <ofc>9</ofc><rad>persvad</rad>/i
      <fnt>B</fnt> <fnt><bib>PV</bib></fnt>
    </kap>

    <drv mrk="persva.0i">
      <kap><ofc>9</ofc><tld/>i</kap>
      <gra><vspec>x</vspec></gra>
      <snc mrk="persva.0i.KOMUNE">
        <dif>
          Per insista argumentado, petegado, ka&jcirc;olado, minacoj ktp
          igi iun konsenti pri io a&ubreve; iel agi:
          <ekz>
            <tld/>i iun pri io;
          </ekz><ekz>
            &scirc;i ne tiom konvinkis, kiom <tld/>is lin da&ubreve;rigi kuracadon;
          </ekz><ekz>
            &scirc;i <tld/>is min kuniri, kvankam mi ne vere volis
            <fnt>
              <aut>AdE</aut>:
              <vrk>Na&ubreve;a Oficiala Aldono al la Universala Vortaro</vrk>.
            </fnt>;
          </ekz><ekz>
            ne <tld/>u min, mia kara, tutegale vi min ne konvinkos;
          </ekz><ekz>
            <tld/>i al iu, ke li edzi&gcirc;u<fnt>B</fnt>;
          </ekz><ekz>
            la serpento <tld/>is Evan gustumi la frukton;
          </ekz><ekz>
            homoj kiuj pretendas ke oni povas miskonduki la diojn
            citas Homeron kiel atestanton, &ccirc;ar li diras: 
            <ctl>Oni povas <tld/>i la diojn per pre&gcirc;o,
              Per oferoj kaj mildigaj vota&gcirc;oj,
              Oni forturnas ilin per ver&scirc;oferoj kaj bruloferoj
              Kiam iu mispa&scirc;as kaj pekas.</ctl>
            <klr>(Iliado 9:497-450)</klr>
	    <fnt>
	      <aut>Platono, tr. D. Broadribb</aut>:
	      <vrk>La Respubliko</vrk>.
	      <lok>Parto 2a</lok>.
	    </fnt>.
          </ekz>
        </dif>
        <refgrp tip="vid">
          <ref cel="admon.0i.instigi">admoni<sncref/></ref>,
          <ref cel="instig.0i">instigi</ref>,
          <ref cel="konduk.al0i">alkonduki</ref>,
          <ref cel="decid.0igi">decidigi</ref>,
          <ref cel="konvin.0i">konvinki</ref>
        </refgrp>
      </snc>
      <trdgrp lng="be">
        <trd>&c_p;&c_je;&c_r;&c_a;&c_k;&c_a;&c_n;&c_a;&c_c;&c_mol;</trd>,
        <trd>&c_u;&c_g;&c_a;&c_v;&c_a;&c_r;&c_y;&c_c;&c_mol;</trd>,
        <trd>&c_u;&c_p;&c_e;&c_w;&c_n;&c_ib;&c_c;&c_mol;</trd>,
        <trd>&c_z;&c_a;&c_p;&c_e;&c_w;&c_n;&c_ib;&c_c;&c_mol;</trd>
      </trdgrp>
      <trdgrp lng="ca">
        <trd>persuadir</trd>,
        <trd>incitar</trd>
      </trdgrp>
      <trd lng="de">&uuml;berreden</trd>
      <trd lng="es">persuadir</trd>
      <trd lng="en">persuade</trd>
      <trd lng="fr">persuader</trd>
      <trd lng="hu">r&aacute;besz&eacute;l</trd>
      <trd lng="it">persuadere</trd>
      <trd lng="nl">overreden</trd>
      <trdgrp lng="pl">
        <trd>perswadowa&cacute;</trd>,
        <trd>przekonywa&cacute;</trd>,
        <trd>namawia&cacute; <klr tip="ind">kogo&sacute; do czego&sacute;</klr></trd>,
        <trd>nak&lstroke;ania&cacute; <klr tip="ind">kogo&sacute; do czego&sacute;</klr></trd>,
        <trd>wmawia&cacute; <klr tip="ind">co&sacute; komu&sacute;</klr></trd>
      </trdgrp>
      <trd lng="pt">persuadir</trd>
      <trdgrp lng="ru">
        <trd>&c_u;&c_g;&c_o;&c_v;&c_o;&c_r;&c_i;&c_t;&c_mol;</trd>,
        <trd>&c_u;&c_v;&c_je;&c_shch;&c_a;&c_t;&c_mol;</trd>,
        <trd>&c_u;&c_v;&c_je;&c_shch;&c_je;&c_v;&c_a;&c_t;&c_mol;</trd>
      </trdgrp>
      <trdgrp lng="uk">
    <trd>&#x443;&#x43C;&#x43E;&#x432;&#x43B;&#x44F;&#x442;&#x438;</trd>,
    <trd>&#x43D;&#x430;&#x43C;&#x43E;&#x432;&#x43B;&#x44F;&#x442;&#x438;</trd>,
    <trd>&#x441;&#x445;&#x438;&#x43B;&#x44F;&#x442;&#x438;</trd>,
    <trd>&#x43F;&#x435;&#x440;&#x435;&#x43A;&#x43E;&#x43D;&#x443;&#x432;&#x430;&#x442;&#x438;</trd>
  </trdgrp>
</drv>

    <drv mrk="persva.0a">
      <kap><tld/>a</kap>
      <snc mrk="persva.0a.KOMUNE">
        <dif>
          Rilata al la ago <tld/>i:
          <ekz>
            <tld/>a letero;
          </ekz><ekz>
            ili <klr>...</klr> dungos aktorojn kun bonaj, fortaj,
            <tld/>aj vo&ccirc;oj, kaj anta&ubreve; homamasoj propagandos favore al
            tiranismo kaj demokratio
	    <fnt>
	      <aut>Platono, tr. D. Broadribb</aut>:
	      <vrk>La Respubliko</vrk>.
	      <lok>Parto 7a</lok>.
	    </fnt>.
          </ekz>
        </dif>
      </snc>
  <trdgrp lng="ca">
        <trd>persuasiu</trd>,
        <trd>eloq&uuml;ent</trd>
      </trdgrp>
  <trd lng="cs">p&rcaron;esv&ecaron;d&ccaron;iv&yacute;</trd>
  <trd lng="es">persuasor</trd>
  <trd lng="fr">persuasif</trd>
  <trdgrp lng="pl">
        <trd>przekonywaj&aogonek;cy</trd>,
        <trd>perswaduj&aogonek;cy</trd>
      </trdgrp>
  <trd lng="ru">&c_u;&c_v;&c_je;&c_shch;&c_a;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
  <trd lng="sk">presved&ccaron;iv&yacute;</trd>
  <trdgrp lng="uk">
    <trd>&#x43F;&#x435;&#x440;&#x435;&#x43A;&#x43E;&#x43D;&#x43B;&#x438;&#x432;&#x438;&#x439;</trd>,
    <trd>&#x432;&#x430;&#x433;&#x43E;&#x43C;&#x438;&#x439;</trd>
  </trdgrp>
</drv>

