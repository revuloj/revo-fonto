<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: amar.xml,v 1.29 2022/04/26 14:57:17 revo Exp $">
    <kap>
      <ofc>4</ofc>
      <rad>amar</rad>/a
    </kap>

<drv mrk="amar.0a">
  <kap><tld/>a</kap>
  <snc mrk="amar.0a.gusto">
    <dif>
      <ref tip="sin" cel="dolcx.mal0a.gusto">Maldol&ccirc;a</ref> por la
      <ref tip="lst" cel="gust.0o.eco" lst="voko:gustoj">gusto</ref>, kiel <ref cel="gal.0o">galo</ref>, 
      aloo, genciano, leontodo, kakao:
      <ekz>
        li eble mem venos supren kaj gustos la <tld/>ajn oran&gcirc;ojn
        <fnt>
          <bib>Mortul&Scirc;ip</bib>
        </fnt>;
      </ekz>
      <ekz>
        tre <tld/>a, malagrabla gusto, tial la indi&gcirc;enoj havas problemon por mortigi iun
        per tiu veneno
        <fnt>
          <bib>ChC</bib>
        </fnt>;
      </ekz>
      <ekz>
        festena tablo, sur &gcirc;i ku&scirc;is la viando de la kaprido kaj vinkalikoj staris inter
        la pladoj kun la <tld/>aj herboj
        <fnt>
          <bib>MkM</bib>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la pilolo estis <tld/>a, kaj nur dolore digestebla, sed kion fari
        <fnt>
          <bib>Lanti</bib>
        </fnt>?
      </ekz>
    </dif>
    <trd lng="bg">&c_g;&c_o;&c_r;&c_ch;&c_i;&c_v;</trd>
    <trd lng="cy">chwerw</trd>
    <trd lng="da">bitter</trd>
    <trd lng="eu">mingots</trd>
    <trd lng="fi">karvas</trd>
    <trd lng="ia">amar</trd>
    <trd lng="ka">&#x10DB;&#x10EC;&#x10D0;&#x10E0;&#x10D4;</trd>
    <trd lng="no">bitter</trd>
    <trd lng="oc">amar</trd>
    <trd lng="pl">gorzki</trd>
    <trd lng="pt">amargo</trd>
    <trd lng="ro">amar</trd>
    <trd lng="sr">&c_g;&c_o;&c_r;&c_a;&c_k;</trd>
    <trd lng="sv">bitter</trd>      
  </snc>
  <snc mrk="amar.0a.sento">
    <dif>
      Tiel <ref tip="sin" cel="dolcx.mal0a.sento">maldol&ccirc;a</ref> por la koro, 
      kiel por la lipoj; <ref cel="akr.0a.dolora">akra</ref>, <ref cel="mild.mal0a">malmilda</ref>:
      <ekz>
        <tld/>a beda&ubreve;ro, moko, parolo, kritiko, ripro&ccirc;o;
      </ekz>
      <ekz>
        kun <tld/>a sento li haltis kaj prenis cigaredon el sia po&scirc;o
        <fnt>
          <bib>LGA</bib>
        </fnt>;
      </ekz>
      <ekz>
        kial rigardi malanta&ubreve;en? tie <klr>[&#x2026;]</klr> kreskos nenio krom la kardoj kaj
        urtikoj de <tld/>aj memoroj
        <fnt>
          <bib>Tor</bib>
        </fnt>;
      </ekz>
      <ekz>
        nevidebla forto pu&scirc;is lin anta&ubreve;en <klr>[&#x2026;]</klr> &ndash; kun la plezuro miksi&gcirc;is la
        <tld/>o de la doloro pro la malaperinta supereco kaj kreskanta necerteco
        <fnt>
          <bib>KKr</bib>
        </fnt>;
      </ekz>
      <ekz>
        se mi venki&gcirc;us dum tiu atako, larmfluo <tld/>a plenigus sitelon!
        <fnt>
          <aut>Raymond Schwartz</aut>
          <vrk><url ref="&Steloj;butiko">La Stranga Butiko</url></vrk>
          <lok>Pri Somero</lok>
        </fnt>;
      </ekz>
      <ekz>
        stultaj larmoj ekrapidis, humilige, li metis la manon sur miajn harojn, la tu&scirc;o
        mildigis, sed ne forigis la <tld/>on
        <fnt>
          <aut>Spomenka &Scaron;timec</aut>
          <vrk>Ombro sur interna pejza&gcirc;o</vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_g;&c_o;&c_r;&c_k;&c_ib;</trd>
  <trd lng="bo">&t_kha;&t_tsheg;&t_ta;&t_gigu;&t_ga;&t_tsheg;</trd>
  <trd lng="ca">amarg</trd>
  <trdgrp lng="cs">
    <trd>ho&rcaron;k&yacute;</trd>,
    <trd>trpk&yacute; <klr>(i citov&ecaron;)</klr></trd>,
    <trd>zaho&rcaron;kl&yacute;</trd>
  </trdgrp>
  <trd lng="de">bitter</trd>
  <trd lng="en">bitter</trd>
  <trd lng="es">amargo</trd>
  <trd lng="fr">amer</trd>
  <trd lng="he">&tet;&ayin;&fmem; &mem;&resh;</trd>
  <trd lng="id">pahit</trd>
  <trd lng="it">amaro</trd>
  <trd lng="nl">bitter</trd>
  <trd lng="ru">&c_g;&c_o;&c_r;&c_mol;&c_k;&c_i;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>hork&yacute;</trd>,
    <trd>trpk&yacute;</trd>
  </trdgrp>
  <trd lng="uk">&#x433;&#x456;&#x440;&#x43A;&#x438;&#x439;&#xA0;(&#x442;&#x436; &#x43F;&#x435;&#x440;&#x435;&#x43D;.)</trd>
</drv>

<drv mrk="amar.dolcx0a">
  <kap>
    dol&ccirc;<tld/>a
  </kap>
  <snc>
    <dif>
      Samtempe <ref cel="dolcx.0a">dol&ccirc;a</ref> kaj <tld/>a:
      <ekz>
        <uzo tip="stl">FIG</uzo>
        dol&ccirc;<tld/>a foro
        <fnt>
          <bib>Kon11</bib>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <klr>[la]</klr> melodio <klr>[&#x2026;]</klr> elvokis al mi melankolian <klr>[&#x2026;]</klr>
        dol&ccirc;<tld/>an senton, kiun la portugaloj nomas sa&ubreve;dado
        <fnt>
          <bib>Monato</bib>
          <aut>Garvan Makaj</aut>
          <vrk><url ref="&Monato;/2010/010123.php">Neniam plu</url></vrk>
          <lok>2010</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <ref tip="hom" cel="dolcxa.0o">dol&ccirc;amaro (solano)</ref>
  <trd lng="be">&c_g;&c_o;&c_r;&c_k;&c_a;-&c_s;&c_a;&c_l;&c_o;&c_d;&c_k;&c_ib;</trd>
  <trd lng="de">bitters&uuml;&szlig;</trd>
  <trd lng="en">bittersweet</trd>
</drv>




