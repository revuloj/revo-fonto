<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: belado.xml,v 1.24 2022/04/26 15:00:33 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>beladon</rad>/o
</kap>

<drv mrk="belado.0o">
  <kap>
    <ofc>*</ofc>
    <tld/>o
  </kap>
  <uzo tip="fak">BOT</uzo>
  <snc>
    <dif>
      <ref tip="lst" cel="speci.0o.BIO" lst="voko:botanikaj_specioj">Specio</ref> el familio 
      <ref tip="malprt" cel="solana.0oj">solanacoj</ref>
      (<trd lng="la">Atropa belladona</trd>); 
      alta disbran&ccirc;i&gcirc;anta 
      <ref tip="lst" cel="stauxd.0o" lst="voko:solanoparencoj">sta&ubreve;do</ref>,
      kun klo&scirc;formaj violkoloraj a&ubreve; flavaj floroj kaj 
      globformaj nigraj a&ubreve; flavaj beroj enhavantajn
      tre multajn renformajn semetojn;
      &ccirc;iuj partoj de la vegeta&jcirc;o estas venenaj, enhavantaj i.a.
      hiosciaminon, el kiu oni produktas <ref cel="atropi.0o">atropinon</ref>:
      <ekz>
        atropino donis al la planto <tld/>o la nomon: iam virinoj uzis 
        etan kvanton da atropino (ekstraktita el <tld/>o) por pligrandigi
        la pupilojn kaj tiel aspekti pli alloge
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=18620">Beladono</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <bld lok="&WCU;/thumb/d/dd/Atropa_belladonna_Pokrzyk_wilcza-jagoda_2015-05-17_02.jpg/435px-Atropa_belladonna_Pokrzyk_wilcza-jagoda_2015-05-17_02.jpg" prm="CC BY-SA 4.0">floroj de <tld/>o (Atropa belladonna), Botanika &Gcirc;ardeno de Universitato Wroc&lstroke;aw, Pollando
        <fnt>
          <aut>Agnieszka Kwiecie&nacute;, Nova, propra verko</aut>
          <lok><url ref="&WCW;/File:Atropa_belladonna_Pokrzyk_wilcza-jagoda_2015-05-17_02.jpg">&WCW;/File:Atropa_belladonna_Pokrzyk_wilcza-jagoda_2015-05-17_02.jpg</url></lok>
        </fnt>
    </bld>
    <bld lok="&WCU;/thumb/1/1f/Atropa_bella-donna0.jpg/320px-Atropa_bella-donna0.jpg" prm="CC-BY-SA-3.0">fruktoj de <tld/>o
    
        <fnt>
          <aut>Kurt St&uuml;ber, caliban.mpiz-koeln.mpg.de/mavica/index.html parto de www.biolib.de</aut>
          <lok><url ref="&WCW;/File:Atropa_bella-donna0.jpg">&WCW;/File:Atropa_bella-donna0.jpg</url></lok>
        </fnt>
    </bld>
    <trd lng="be">&c_b;&c_je;&c_l;&c_a;&c_d;&c_o;&c_n;&c_n;&c_a;</trd>
    <trd lng="br">benede</trd>
    <trd lng="de">Tollkirsche</trd>
    <trdgrp lng="en">
      <trd>deadly <ind>nightshade</ind></trd>,
      <trd>devil's cherry</trd>,
      <trd>belladonna</trd>
    </trdgrp>
    <trd lng="es">belladona</trd>
    <trd lng="fr">belladone</trd>
    <trd lng="hu">(maszlagos) <ind>nadragulya</ind></trd>
    <trd lng="nl">belladonna</trd>
    <trdgrp lng="pl">
      <trd>belladona</trd>,
      <trd>pokrzyk</trd>,
      <trd>wilcza <ind>jagoda</ind><klr> (pot.)</klr></trd>
    </trdgrp>
    <trd lng="pt">beladona</trd>
    <trdgrp lng="ru">
      <trd>&c_b;&c_je;&c_l;&c_a;&c_d;&c_o;&c_n;&c_n;&c_a;</trd>,
      <trd>&c_k;&c_r;&c_a;&c_s;&c_a;&c_v;&c_k;&c_a;</trd>
    </trdgrp>
    <trd lng="sv">belladonna</trd>
  </snc>
  <trdgrp lng="uk">
    <trd>&#x431;&#x435;&#x43B;&#x430;&#x434;&#x43E;&#x43D;&#x430;</trd>,
    <trd>&#x43A;&#x440;&#x430;&#x441;&#x430;&#x432;&#x43A;&#x430;</trd>
  </trdgrp>
</drv>
</art>

