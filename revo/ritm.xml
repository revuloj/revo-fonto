<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>ritm</rad>/o
</kap>
<drv mrk="ritm.0o">
  <kap><tld/>o</kap>
  <snc mrk="ritm.0o.MUZ">
    <uzo tip="fak">MUZ</uzo>
    <dif>
      Perioda melodia reveno de la akcentitaj kaj neakcentitaj tonoj en
      muzika&jcirc;o:
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>e <klr>(takte)</klr> pa&scirc;i<fnt>B</fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="ritm.0o.POE">
    <uzo tip="fak">POE</uzo>
    <dif>
      Baza principo de <ref cel="vers.0farado">versfarado</ref>,
      konsistanta en regula alterno de <ref cel="silab.0o">silaboj</ref>
      akcentaj kaj senakcentaj, a&ubreve; longaj kaj mallongaj; tiu alterno mem:
      <ekz>
        la <tld/>o de verso esprimi&gcirc;as per la sinsekvo de &gcirc;iaj
        <ref cel="pied.0o.POE">piedoj</ref>;
      </ekz>
      <ekz>
        revivi&gcirc;inta greko certe a&ubreve;skultus mal&scirc;ate la
        barbarajn akcentajn <tld/>ojn
        <fnt><aut>&K;</aut><vrk>Tutmonda Sonoro; Budapest, 1981</vrk><lok>p.
        568</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="metr.0o.POE">metro</ref>
    </refgrp>
  </snc>
  <refgrp tip="vid">
    <ref cel="melodi.0o">melodio</ref>,
    <ref cel="harmon1.0o">harmonio</ref>.
  </refgrp>
  <trd lng="be">&c_r;&c_y;&c_t;&c_m;</trd>
  <trd lng="de">Rhythmus</trd>
  <trd lng="en">rhythm</trd>
  <trd lng="fr">rythme</trd>
  <trd lng="nl">ritme</trd>
  <trd lng="ru">&c_r;&c_i;&c_t;&c_m;</trd>
  <trd lng="sv">rytm</trd>
</drv>
</art>
