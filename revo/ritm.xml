<art mrk="$Id: ritm.xml,v 1.28 2023/09/03 07:53:11 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>ritm</rad>/o
</kap>
<drv mrk="ritm.0o">
  <kap><tld/>o</kap>
  <snc mrk="ritm.0o.MUZ">
    <uzo tip="fak">MUZ</uzo>
    <dif>
      Perioda melodia reveno de la akcentitaj kaj neakcentitaj tonoj en
      muzika&jcirc;o:
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>e <klr>(takte)</klr> pa&scirc;i<fnt>B</fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="ritm.0o.POE">
    <uzo tip="fak">POE</uzo>
    <dif>
      Baza principo de <ref cel="vers.0farado">versfarado</ref>,
      konsistanta en regula alterno de <ref cel="silab.0o">silaboj</ref>
      akcentaj kaj senakcentaj, a&ubreve; longaj kaj mallongaj; tiu 
alterno mem:
      <ekz>
        la <tld/>o de verso esprimi&gcirc;as per la sinsekvo de &gcirc;iaj
        <ref cel="pied.0o.POE">piedoj</ref>;
      </ekz>
      <ekz>
        revivi&gcirc;inta greko certe a&ubreve;skultus mal&scirc;ate la
        barbarajn akcentajn <tld/>ojn
        <fnt><aut>&K;</aut>, <vrk>Tutmonda Sonoro. - Budapest, 
1981</vrk>, <lok>p.
        568</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="metr.0o.POE">metro <sncref/></ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_r;&c_y;&c_t;&c_m;</trd>
  <trd lng="bg">&c_r;&c_i;&c_t;&c_malmol;&c_m;</trd>
  <trd lng="ca">ritme</trd>
  <trdgrp lng="cs">
    <trd>b&#xE1;snick&#xE1; stopa</trd>,
    <trd>rytmus</trd>
  </trdgrp>
  <trd lng="de">Rhythmus</trd>
  <trd lng="en">rhythm</trd>
  <trd lng="es">ritmo</trd>
  <trdgrp lng="fa">
    <trd>&a_w;&a_z;&a_n;</trd>
    <trd>&a_r;&f_y;&a_t;&a_m;</trd>
  </trdgrp>
  <trd lng="fr">rythme</trd>
  <trd lng="hu">ritmus</trd>
  <trdgrp lng="ja">
    <trd>&#x30EA;&#x30BA;&#x30E0;  [<ind>&#x308A;&#x305A;&#x3080;</ind>]</trd>,
    <trd>&#x5F8B;&#x52D5;  [<ind>&#x308A;&#x3064;&#x3069;&#x3046;</ind>]</trd>,
    <trd>&#x5468;&#x671F;&#x7684;&#x5909;&#x52D5;  [<ind>&#x3057;&#x3085;&#x3046;&#x304D;&#x3066;&#x304D;&#x3078;&#x3093;&#x3069;&#x3046;</ind>]</trd>,
    <trd>&#x97FB;&#x5F8B;  [<ind>&#x3044;&#x3093;&#x308A;&#x3064;</ind>]</trd>
  </trdgrp>
  <trd lng="nl">ritme</trd>
  <trd lng="pl">rytm</trd>
  <trd lng="pt">ritmo</trd>
  <trd lng="ro">ritm</trd>
  <trd lng="ru">&c_r;&c_i;&c_t;&c_m;</trd>
  <trdgrp lng="sk">
    <trd>rytmus</trd>,
    <trd>tempo</trd>
  </trdgrp>
  <trd lng="sv">rytm</trd>
  <trdgrp lng="uk">
    <trd>&#x440;&#x438;&#x442;&#x43C;</trd>,
    <trd>&#x442;&#x435;&#x43C;&#x43F;</trd>
  </trdgrp>
</drv>
</art>
