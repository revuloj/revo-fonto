<drv mrk="sauxdad.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      <ref tip="sin" cel="nostal.0o">Nostalgio</ref>, esprimata en portugala
      kaj galicia poezio kaj la <ref cel="fad1.0o">fado</ref>:
      <ekz>
        se li memoras, venas la <tld/>o!
        <fnt>
       <aut>Manoel BORGES DOS SANTOS</aut>
          <vrk><url ref="&Monato;/2000/006863.php">Poemoj</url></vrk>
          <bib>Monato</bib>
          <lok>2000/04, p. 32</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[la]</klr> melodio <klr>[&#8230;]</klr> elvokis <klr>[&#8230;]</klr> tiun
        <ref cel="amar.dolcx0a">dol&ccirc;amara</ref>n
        senton, kiun la portugaloj nomas <tld/>o
        <fnt>
          <bib>Monato</bib>
          <aut>Garvan Makaj'</aut>
          <vrk><url ref="&Monato;/2010/010123.php">Neniam plu</url></vrk>
          <lok>2010</lok>
        </fnt>;
      </ekz>
      <ekz>
        la translokitoj eknostalgias kaj komencas morti pro <tld/>o, kiel asertas
        kuracisto
        <fnt>
          <bib>Monato</bib>
          <aut>Carlo Minnaja</aut>
          <vrk><url ref="&Monato;/2014/011108.php">Perfidita popolo</url></vrk>
          <lok>2014</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="elegi.0o">elegio</ref>,
      <ref cel="melank.0o">melankolio</ref>,
      <ref cel="sopir.0o.sento">sopiro<sncref/></ref>
    </refgrp>
    <trd lng="de">Saudade</trd>
    <trd lng="en">Saudade</trd>
    <trd lng="es">Saudade</trd>
    <trd lng="fr">Saudade</trd>
    <trd lng="pl">saudade</trd>
    <trd lng="pt">Saudade</trd>
  </snc>
  <rim>
    La&#365; <fnt><bib>BL</bib></fnt>: Prefere diru <ke>nostalgio</ke>, <ke>hejmsopiro</ke>.
  </rim>

  <trd lng="be">&c_s;&c_a;&c_w;&c_d;&c_a;&c_d;&c_e; <klr>(&c_l;&c_jo;&c_g;&c_k;&c_ib; &c_s;&c_m;&c_u;&c_t;&c_a;&c_k;)</klr></trd>
  <trd lng="uk">&c_s;&#1086;&#1083;&#1086;&c_d;&#1082;&c_i;&c_j; &c_shch;&c_je;&#1084; (&c_u;
  &#1087;&#1086;&c_r;&c_t;&c_u;&c_g;&c_a;&#1083;&#1100;&c_c;&c_ib;&c_v;)</trd>
