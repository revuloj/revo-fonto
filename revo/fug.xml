<art mrk="$Id: fug.xml,v 1.22 2023/08/31 13:11:32 revo Exp $">
<kap>
  <rad>fug</rad>/o
  <fnt>Z</fnt>
</kap>
<drv mrk="fug.0o">
  <kap><tld/>o</kap>
  <snc mrk="fug.0o.MUZ">
    <uzo tip="fak">MUZ</uzo>
    <dif>
      <ref tip="super" cel="kompon.0ajxo">Kompona&jcirc;o</ref>
      en kiu melodion komencas konduka vo&ccirc;o kaj prokraste
      ripetas imitaj vo&ccirc;oj
      konforme al <ref tip="vid" cel="kontra7.0o">kontrapunktaj</ref>
      reguloj:
      <ekz>
        Johano Sebastiano Ba&hcirc;o en 1750, la jaro de sia morto, ne povis fini sian lastan
        verkon, &leftquot;La arto de fugo&rightquot;
        <fnt>
          <aut>Franz-Georg R&ouml;ssler</aut>
            <vrk><url ref="&Monato;/2001/007295.php">Fini&gcirc;is la Bach-jaro</url></vrk>
            <bib>Monato</bib>
            <lok>2001/01, p. 17</lok>
          </fnt>;
      </ekz>
      <ekz>
        li finis malla&ubreve;te sian agadon kiel <klr>[&#x2026;]</klr> tradiciisto, e&ccirc;
        kontra&ubreve;modernisto, kiu fine <klr>[&#x2026;]</klr> preferis eksmodi&gcirc;intajn
        muzikformojn, kiel <tld/>o, kanono
        <fnt>
          <bib>Monato</bib>
          <aut>Franz-Georg R&ouml;ssler</aut>
          <vrk><url ref="&Monato;/2014/011202.php">Pura muziko por eonoj</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_f;&c_u;&c_g;&c_a;</trd>
  <trd lng="bg">&c_f;&c_u;&c_g;&c_a;</trd>
  <trd lng="ca">fuga<klr> (m&uacute;s.)</klr></trd>
  <trd lng="cs">fuga</trd>
  <trd lng="de">Fuge <klr>(Musik)</klr></trd>
  <trd lng="en">fugue<klr> (musical)</klr></trd>
  <trd lng="fr">fugue<klr> (musicale)</klr></trd>
  <trd lng="ja">&#x30D5;&#x30FC;&#x30AC;</trd>
  <trd lng="nl">fuga</trd>
  <trd lng="pt">fuga</trd>
  <trd lng="ru">&c_f;&c_u;&c_g;&c_a;</trd>
  <trd lng="sk">f&uacute;ga <klr>(hud)</klr></trd>
  <trd lng="uk">&c_f;&c_u;&c_gu;&c_a;</trd>
</drv>
</art>
