<kap>
  <rad>indulgenc</rad>/o
  <fnt><bib>JED</bib></fnt>
</kap>
<drv mrk="indulg1.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">KAT</uzo>
  <snc>
    <dif>
      Plena a&ubreve; parta anta&ubreve;liberigo je la punoj merititaj
      pro pekoj, konsentita de la Eklezio la&ubreve; difinitaj
      kondi&ccirc;oj (fasto, pre&gcirc;o, almozo ktp):
      <ekz>
        gajni, meriti <tld/>ojn;
      </ekz>
      <ekz>
        en Prago pastroj komencis vendi la <tld/>ojn en 1412 kaj minacis per inferaj
        punoj al tiuj, kiuj neniel volis kontribui al la milito
        <fnt>
          <bib>Monato</bib>
          <aut>Gerrit Berveling</aut>
          <vrk>Katolikismo: Johano Hus &ndash; &ccirc;u ne plu herezulo?</vrk>
        </fnt>;
      </ekz>
      <ekz>
        la buleisto supreniris la podion kaj komencis la
        predikon por kura&gcirc;igi la homojn ne resti sen tiom
        da bono kaj <tld/>o, kiom la sanktaj buleoj reprezentas
        <fnt>
          <aut>E. de Bonaero</aut>,
          <vrk>La Friponeto de Tormes</vrk>,
          <lok>1973</lok>
        </fnt>.
      </ekz>
      <ekz>
        tie estis mi dum la <tld/>o anta&ubreve; tridekjaro
        <fnt>
          <bib>SrT</bib>
          <lok>Libro IV.</lok>
        </fnt>;
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="absolv.0o">absolvo</ref>,
      <ref cel="pek.0liberigi">pekliberigo</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_ib;&c_n;&c_d;&c_u;&c_l;&c_mol;&c_g;&c_je;&c_n;&c_c;&c_y;&c_ja;</trd>
  <trd lng="bg">&c_i;&c_n;&c_d;&c_u;&c_l;&c_g;&c_je;&c_n;&c_c;&c_i;&c_ja;</trd>
  <trdgrp lng="cs">
    <trd>indulgencie</trd>,
    <trd>odpustky</trd>,
    <trd>odpu&scaron;t&ecaron;n&iacute; h&rcaron;&iacute;ch&uring;</trd>
  </trdgrp>
  <trd lng="de">Ablass <klr>(Kath.)</klr></trd>
  <trd lng="en">indulgence<klr tip="amb"> (catholic)</klr></trd>
  <trd lng="es">indulgencia</trd>
  <trdgrp lng="fa">
    <trd>&f_g;&a_dh;&a_sh;&a_t;</trd>,
    <trd>&f_ch;&a_sh;&a_m;&zwnj;&f_p;&a_w;&a_sh;&f_y;</trd>,
    <trd>&a_A;&a_gh;&a_m;&a_A;&a_D;</trd>
  </trdgrp>
  <trd lng="fr">indulgence<klr tip="ind"> (cath.)</klr></trd>
  <trdgrp lng="hu">
    <trd>b&uacute;cs&uacute;<klr tip="ind"> (b&udblac;nbocs&aacute;nat)
    </klr></trd>,
    <trd>b&udblac;nbocs&aacute;nat</trd>
  </trdgrp>
  <trd lng="it">indulgenza<klr> (rel.)</klr></trd>
  <trdgrp lng="ja">
    <trd>&#36118;&#23461;  <pr>&#12375;&#12423;&#12367;&#12422;&#12358;</pr></trd>,
    <trd>&#20813;&#32618;  <pr>&#12417;&#12435;&#12374;&#12356;</pr></trd>,
    <trd>&#36118;&#23461;&#29366;  <pr>&#12375;&#12423;&#12367;&#12422;&#12358;&#12376;&#12423;&#12358;</pr></trd>,
    <trd>&#20813;&#32618;&#31526;  <pr>&#12417;&#12435;&#12374;&#12356;&#12405;</pr></trd>
  </trdgrp>
  <trd lng="nl">aflaat</trd>
  <trd lng="pl">odpust</trd>
  <trd lng="pt">indulg&ecirc;ncia<klr tip="amb"> (catolicismo)</klr>
  </trd>
  <trdgrp lng="ru">
    <trd>&c_i;&c_n;&c_d;&c_u;&c_l;&c_mol;&c_g;&c_je;&c_n;&c_c;&c_i;&c_ja;</trd>,
    <trd>&c_o;&c_t;&c_p;&c_u;&c_shch;&c_je;&c_n;&c_i;&c_je; &c_g;&c_r;&c_je;&c_h;&c_o;&c_v;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>odpustenie hriechov</trd>,
    <trd>odpustky</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_v;&c_ib;&c_d;&c_p;&c_u;&c_s;&c_t;</trd>,
    <trd>&c_v;&c_ib;&c_d;&c_p;&c_u;&c_shch;&c_je;&c_n;&c_n;&c_ja; &c_g;&c_r;&c_ib;&c_h;&c_ib;&c_v;</trd>,
    <trd>&c_ib;&c_n;&c_d;&c_u;&c_l;&c_mol;&c_gu;&c_je;&c_n;&c_c;&c_ib;&c_ja;</trd>
  </trdgrp>
  <trd lng="zh">&#36118;&#32618;&#21048; <pr>sh&uacute;zu&igrave;qu&agrave;n</pr></trd>
</drv>
