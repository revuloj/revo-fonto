<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>*</ofc>
      <rad>step</rad>/o
    </kap>
    <drv mrk="step.0o">
      <kap><ofc>*</ofc><tld/>o</kap>
      <uzo tip="fak">GEOG</uzo>
      <snc mrk="step.0o.ebena">
	<dif>
	  Senarbara regiono kun herbeca vegeta&jcirc;aro en moderaj kaj
	  subtropikaj klimatzonoj de la norda kaj suda duongloboj;
	  en E&ubreve;razio la Granda <tld lit="S"/>o etendi&gcirc;as latitude,
	  de Mongolujo &gcirc;is Hungarujo; en la Amerikoj, meridiane, suden de
	  Montano kaj norden ekde Argentino
	  (<refgrp tip="sub">
	    <ref>prerio</ref>,
	    <ref cel="pamp.0o">pampo</ref>
	  </refgrp>); anka&ubreve; en Orienta Azio kaj A&ubreve;stralio:
          <ekz>
            &ccirc;i tie la sova&gcirc;aj &ccirc;evaloj galopas tra la vastaj <tld/>oj,
            kiel ni tion vidis en nia infaneco
            <fnt><bib>Fab3</bib>, <lok>Cigna nesto</lok></fnt>;
          </ekz><ekz>
            kaj Moseo supreniris de la <tld/>o de Moab sur la monton Nebo,
            sur la supron de Pisga, kiu estas kontraux Jeri&hcirc;o
            <fnt><bib>MT</bib>, <lok>&Rea; 34:1.</lok></fnt>.
          </ekz>
	</dif>
      </snc>
      <snc mrk="step.0o.montara">
	<dif>
	  Simila altozono en montaro.
	</dif>
      </snc>
      <trd lng="de">Steppe</trd>
      <trd lng="nl">steppe</trd>
      <trd lng="ru">&c_s;&c_t;&c_je;&c_p;&c_mol;</trd>
      <trdgrp lng="sv">
	<trd>st&auml;pp</trd>,
	<trd>hed</trd>
      </trdgrp>
    </drv>

    <drv mrk="step.0ano">
      <kap><tld/>ano</kap>
      <snc>
	<dif>
	  Lo&gcirc;anto de <tld/>o.
	</dif>
	<ref tip="vid" cel="nomad.0o">nomado</ref>
      </snc>
      <trd lng="ru">&c_s;&c_t;&c_je;&c_p;&c_n;&c_ja;&c_k;</trd>
    </drv>

    <drv mrk="step.arbar0o">
      <kap>arbar<tld/>o</kap>
      <uzo tip="fak">GEOG</uzo>
      <snc>
	<dif>
	  Regiono en kiu <tld/>o alternas kun arbaro.
	</dif>
      </snc>
      <trd lng="de">Waldsteppe</trd>
      <trd lng="en">wooded steppe</trd>
      <trd lng="ru">&c_l;&c_je;&c_s;&c_o;&c_s;&c_t;&c_je;&c_p;&c_mol;</trd>
    </drv>

  </art>
