<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>ekzerc</rad>/i
</kap>
<drv mrk="ekzerc.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Lertigi per la praktiko:
      <ekz>
        <tld/>i la soldatojn
        <fnt>(<aut>Prus, trad. Kabe</aut>: <vrk>La Faraono, 1a vol.</vrk>,
        <lok>&ccirc;ap. 22</lok>)</fnt>;
      </ekz>
      <ekz>
        <ind>sin <tld/>i</ind> en parolado<fnt>Z</fnt>;
        <trdgrp lng="fr">
          <trd>s'<ind>exercer</ind><klr tip="ind"> (s'entra&icirc;ner)</klr></trd>,
          <trd>s'<ind>entra&icirc;ner</ind><klr tip="ind"> (s'exercer)</klr></trd></trdgrp>
        <trd lng="ru">&c_u;&c_p;&c_r;&c_a;&c_zh;&c_n;&c_ja;&c_t;&c_mol;&c_s;&c_ja;</trd> 
      </ekz>
      <ekz>
        <tld/>i sian orelon<fnt>Z</fnt>,
        sian langon, muskolojn, fingrojn;
      </ekz>
      <ekz>
        <tld/>i sian spiriton per la rezonado, sian memoron;
      </ekz>
      <ekz>
        vere <tld/>ita aktoro;
      </ekz>
      <ekz>
        niaj kongresoj estas <tld/>anta k edukanta
        anta&ubreve;parolo <klr>(enkonduko)</klr> por la estonta 
        historio de la homaro<fnt>Z</fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="dres.0i">dresi</ref>,
      <ref cel="prakti.0i">praktiki</ref>,
      <ref cel="hard.0i">hardi</ref>.
    </refgrp>
    <rim>
      La esprimoj <ekz><tld/>i lingvon, <tld/>i ian lernota&jcirc;on
      </ekz> a&ubreve; similaj estas nepre malkorektaj &ccirc;ar la verbo
      <tld/>i, konforme al sia &gcirc;usta signifo, povas havi kiel rektan
      komplementon nur ian lernantan personon a&ubreve; plilerti&gcirc;ontan
      organon a&ubreve; beston.
    </rim>
  </snc>
  <trdgrp lng="de">
    <trd>&uuml;ben</trd>,
    <trd>exerzieren <klr>(soldatojn)</klr></trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>exercer<klr tip="ind"> (entra&icirc;ner)</klr></trd>,
    <trd>entra&icirc;ner<klr tip="ind"> (exercer)</klr></trd></trdgrp> 
  <trd lng="en">exercise</trd>
  <trd lng="ru">&c_u;&c_p;&c_r;&c_a;&c_zh;&c_n;&c_ja;&c_t;&c_mol;</trd>
</drv>
<drv mrk="ekzerc.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Io por <tld/>i sin a&ubreve; aliajn:
      <ekz>
        gramatikaj, korpaj <tld/>oj;
      </ekz>
      <ekz>
        <tld/>o de legado.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">cvi&ccaron;en&iacute;</trd>
  <trd lng="de">&Uuml;bung</trd>
  <trd lng="fr">exercice</trd>
  <trd lng="ru">&c_u;&c_p;&c_r;&c_a;&c_zh;&c_n;&c_je;&c_n;&c_i;&c_je;</trd>
</drv>
<drv mrk="ekzerc.0ado">
  <kap><tld/>ado</kap>
  <snc>
    <dif>
      Ago <tld/>i:
      <ekz>
        <tld/>ado povas &scirc;an&gcirc;i e&ccirc; la naturon
        mem<fnt>Z</fnt>.
      </ekz> 
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>entra&icirc;nement</trd>,
    <trd>exercice<klr tip="ind"> (entra&icirc;nement)</klr></trd></trdgrp> 
</drv>
<drv mrk="ekzerc.0aro">
  <kap><tld/>aro</kap>
  <snc>
    <dif>
      Libro enhavanta aron da <tld/>oj. 
    </dif>
  </snc>
  <trd lng="fr"><ind>recueil</ind> d'exercices</trd>
  <trd lng="ru">&c_s;&c_b;&c_o;&c_r;&c_n;&c_i;&c_k; &c_u;&c_p;&c_r;&c_a;&c_zh;&c_n;&c_je;&c_n;&c_i;&c_j;</trd>
</drv>
<drv mrk="ekzerc.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc>
    <dif>
      Sin <tld/>i:
      <ekz>
        ili <tld/>i&gcirc;is &ccirc;iutage
        <fnt>(<aut>Andersen, trad. Zamenhof</aut>: <vrk>Fabeloj,
        Cikonioj</vrk>)</fnt>;
      </ekz>
      <ekz>
        <tld/>i&gcirc;i en esperanta parolado<fnt>Z</fnt>;
      </ekz>
      <ekz>
        oni multe devas <tld/>i&gcirc;adi anta&ubreve; ol veni al
        perfekteco.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>s'<ind>exercer</ind><klr tip="ind"> (s'entra&icirc;ner)</klr></trd>,
    <trd>s'<ind>entra&icirc;ner</ind><klr tip="ind"> (s'exercer)</klr></trd></trdgrp> 
  <trd lng="ru">&c_u;&c_p;&c_r;&c_a;&c_zh;&c_n;&c_ja;&c_t;&c_mol;&c_s;&c_ja;</trd>
</drv>
<drv mrk="ekzerc.0iteco">
  <kap><tld/>iteco</kap>
  <snc>
    <dif>
      Lerteco akirita de l' <tld/>i&gcirc;ado.  
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>adresse</trd>,
    <trd>dext&eacute;rit&eacute;</trd></trdgrp> 
</drv>
</art>
