<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>barbar</rad>/o
</kap>
<drv mrk="barbar.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Necivilizita homo:
      <ekz>
        la <tld/>oj invadis E&ubreve;ropon dum la 5a jarcento;
      </ekz>
      <ekz>
        kiam en la centra E&ubreve;ropo la <tld/>oj vestitaj per maldelikataj
        feloj sin ka&scirc;is en kavernoj, Egipto jam posedis altan socian
        organizon
        <fnt><bib>Far1</bib>, <lok>anta&ubreve;p.</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>Wilder</trd>,
      <trd>Barbar</trd>
    </trdgrp>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Kruelulo, senkompatulo.
    </dif>
    <trdgrp lng="de">
      <trd>Rohling</trd>,
      <trd>W&uuml;stling</trd>,
      <trd>grausamer Mensch</trd>
    </trdgrp>
  </snc>
  <trd lng="be">&c_b;&c_a;&c_r;&c_b;&c_a;&c_r;</trd>
  <trd lng="es">b&aacute;rbaro</trd>
  <trd lng="fr">barbare<klr tip="ind"> (subst.)</klr></trd>
  <trd lng="hu">barb&aacute;r</trd>
  <trd lng="ru">&c_v;&c_a;&c_r;&c_v;&c_a;&c_r;</trd>
  <trd lng="sk">barbar</trd>
  <trd lng="sv">barbar</trd>
</drv>

<drv mrk="barbar.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Karakterizata per necivilizeco, krudeco, maldelikateco, krueleco:
      <ekz>
        <tld/>a lingvo, konduto, ago, kutimoj.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="sovagx.0a">sova&gcirc;a</ref>,
      <ref cel="human">malhumana</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_b;&c_a;&c_r;&c_b;&c_a;&c_r;&c_s;&c_k;&c_ib;</trd>
  <trdgrp lng="de">
    <trd>wild</trd>,
    <trd>roh</trd>,
    <trd>barbarisch</trd>
  </trdgrp>
  <trd lng="es">b&aacute;rbaro</trd>
  <trd lng="fr">barbare<klr tip="ind"> (adj.)</klr></trd>
  <trd lng="hu">barb&aacute;r</trd>
  <trd lng="ru">&c_v;&c_a;&c_r;&c_v;&c_a;&c_r;&c_s;&c_k;&c_i;&c_j;</trd>
  <trd lng="sk">barbarsk&yacute;</trd>
  <trd lng="sv">barbarisk</trd>
</drv>

<drv mrk="barbar.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc>
    <dif>
      <tld lit="B"/>a ago.
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_a;&c_r;&c_b;&c_a;&c_r;&c_s;&c_t;&c_v;&c_a;</trd>
  <trdgrp lng="de">
    <trd>Barbarei</trd>,
    <trd>Rohheit</trd>,
    <trd>grausame Taten</trd>
  </trdgrp>
  <trd lng="es">barbaridad</trd>
  <trd lng="fr">acte de <ind>barbarie</ind></trd>
  <trd lng="hu">barb&aacute;r cselekedet</trd>
  <trdgrp lng="ru">
    <trd>&c_v;&c_a;&c_r;&c_v;&c_a;&c_r;&c_s;&c_t;&c_v;&c_o;</trd>,
    <trd>&c_v;&c_a;&c_r;&c_v;&c_a;&c_r;&c_s;&c_k;&c_i;&c_j;
    &c_p;&c_o;&c_s;&c_t;&c_u;&c_p;&c_o;&c_k;</trd>
  </trdgrp>
  <trd lng="sk">barbarstvo</trd>
</drv>

<drv mrk="barbar.0eco">
  <kap><tld/>eco</kap>
  <snc>
    <dif>
      Eco de iu a&ubreve; io <tld/>a.
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Wildheit</trd>,
    <trd>Rohheit</trd>,
    <trd>Barbarentum</trd>
  </trdgrp>
  <trd lng="es">barbaridad</trd>
  <trd lng="fr">barbarie</trd>
  <trd lng="hu">barb&aacute;rs&aacute;g</trd>
  <trd lng="sk">barbarskos&tcaron;</trd>
  <trd lng="ru">&c_v;&c_a;&c_r;&c_v;&c_a;&c_r;&c_s;&c_t;&c_v;&c_o;</trd>
</drv>
</art>
