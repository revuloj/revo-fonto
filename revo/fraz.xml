<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>1</ofc>
      <rad>fraz</rad>/o
    </kap>

    <drv mrk="fraz.0o">
      <kap><tld/>o</kap>
      <snc mrk="fraz.0o.GRA">
	<uzo tip="fak">GRA</uzo>
	<dif>
	  Kuna&jcirc;o da vortoj prezentanta kompletan sencon:
	  <ekz>
	    simpla <tld/>o
	    <klr>(konsistanta el ununura <ref tip="prt"
		cel="propoz.0o.GRA">propozicio</ref>)</klr>;
	  </ekz><ekz>
	    kompleksa <tld/>o <klr>(plurpropozicia)</klr>;
	  </ekz><ekz>
	    la lasta <tld/>o de <ref tip="malprt"
	      cel="aline.0o.tekstopeco">alineo</ref>;
	  </ekz><ekz>
	    tiu <tld/>o estas tro longa kaj ne klara;
	  </ekz><ekz>
	    tiu vorto estas subjekto de la <tld/>o;
	  </ekz><ekz>
	    indikativa, ordona, nega <tld/>o.
	  </ekz>
	</dif>
	<trd lng="de">Satz</trd>
	<trd lng="nl">zin</trd>
	<trd lng="ru">&c_p;&c_r;&c_je;&c_d;&c_l;&c_o;&c_zh;&c_je;&c_n;&c_i;&c_je;</trd>
      </snc>
      <snc>
	<uzo tip="stl">FIG</uzo>
	<dif>
	  Afektaj, belsonaj, senkernaj, malmultsignifaj paroloj:
	  <ekz>
	    grandaj <tld/>oj, malgrandaj agoj.
	  </ekz>
	</dif>
	<refgrp tip="vid">
	  <ref cel="emfaz.0o">emfazo</ref>,
	  <ref cel="bombas.0o">bombasto</ref>,
	  <ref cel="afekt">afekto</ref>,
	  <ref cel="patos.0o">patoso</ref>.
	</refgrp>
	<trd lng="de">Reden</trd>
	<trd lng="nl">frase</trd>
      </snc>
      <snc mrk="fraz.0o.MUZ">
	<uzo tip="fak">MUZ</uzo>
	<dif>
	  Nelonga kaj pli-malpli kompleta parto de muzika
	  <ref tip="malprt" cel="tem.0o">temo</ref>,
	  <ref tip="malprt" cel="melodi.0o">melodio</ref>.
	</dif>
	<trd lng="ru">&c_f;&c_r;&c_a;&c_z;&c_a;<klr tip="amb"> (&c_m;&c_u;&c_z;.)</klr></trd>
      </snc>

      <snc mrk="fraz.0o.KOMP">
	<uzo tip="fak">KOMP</uzo>
	<dif>
	  En <ref tip="malprt" cel="lingv.0o.program">programlingvo</ref>,
	  meznivela unuo de programteksto, prezentanta relative
	  a&ubreve;tonoman kaj kompletan informon:
	  <ref tip="sub" cel="deklar.0o.KOMP">deklaron</ref> de programa
	  objekto, <ref tip="sub" cel="ordon.0o.KOMP">ordonon</ref> a&ubreve;
	  komandon, <ref tip="sub" cel="esprim.0o.KOMP">esprimon</ref>:
	  <ekz>
	    deklara, plenumebla, ordona, valorhava <tld/>o.
	  </ekz>
	</dif>
	<trdgrp lng="en">
	  <trd>phrase</trd>, <trd>statement</trd>
	</trdgrp>
      </snc>
      <trd lng="de">Anweisung</trd>
      <trd lng="en">phrase</trd>
      <trdgrp lng="fr">
	<trd>phrase</trd>,
	<trd>discours<klr tip="ind"> (pompeux mais creux)</klr></trd></trdgrp> 
      <trdgrp lng="ru">
	<trd>&c_f;&c_r;&c_a;&c_z;&c_a;</trd>,
	<trd>&c_p;&c_r;&c_je;&c_d;&c_l;&c_o;&c_zh;&c_je;&c_n;&c_i;&c_je;</trd>
      </trdgrp>
    </drv>

    <drv mrk="fraz.0aro">
      <kap><tld/>aro</kap>
      <snc>
	<dif>
	  Kuna&jcirc;o da <tld/>oj.
	</dif>
      </snc>
      <snc>
	<dif>
	  Kolekto da modelaj anta&ubreve;pretaj <tld/>oj.
	</dif>
      </snc>
    </drv>

    <drv mrk="fraz.0i">
      <kap><tld/>i</kap>
      <gra><vspec>ntr</vspec></gra>
      <snc>
	<dif>
	  Paroli per afektaj, malmultsignifaj <tld/>oj.
	</dif>
      </snc>
      <trdgrp lng="fr">
	<trd>discourir<klr tip="ind"> (pontifier)</klr></trd>,
	<trd>pontifier</trd></trdgrp> 
    </drv>

    <drv mrk="fraz.0isto">
      <kap><tld/>isto</kap>
      <snc>
	<dif>
	  Tiu, kiu kutimas <tld/>i:
	  <ekz>
	    <tld/>ista sensenca&jcirc;o<fnt>Z</fnt>.
	  </ekz>
	</dif>
      </snc>
      <trd lng="de">Schw&auml;tzer</trd>
      <trd lng="fr">phraseur</trd>
      <trd lng="ru">&c_f;&c_r;&c_a;&c_z;&c_jo;&c_r;</trd>
    </drv>

    <drv mrk="fraz.cxirkaux0o">
      <kap>&ccirc;irka&ubreve;<tld/>o</kap>
      <snc>
	<dif>
	  <ref tip="super" cel="figur.stil0o">Stilfiguro</ref>,
	  <ref tip="super" cel="trop.0o">tropo</ref> indikanta ideon,
	  personon a&ubreve; objekton ne rekte per la propra vorto, sed per
	  priskribo a&ubreve; karakteriza detalo, ekz-e
	  <ctl>la re&gcirc;o de Olimpo</ctl> anstata&ubreve;
	  <ctl>Ze&ubreve;so</ctl>; <ctl>la Eterna Urbo</ctl>
	  anstata&ubreve; <ctl>Romo</ctl>, <ctl>la a&ubreve;toro de &ccirc;i tiuj linioj</ctl>
	  (anstata&ubreve; <ctl>mi</ctl> en a&ubreve;tora teksto).
	</dif>
      </snc>
      <ref tip="sub" cel="euxfem.0o">e&ubreve;femismo</ref>
      <trd lng="de">Umschreibung</trd>
      <trd lng="en">periphrasis</trd>
      <trd lng="nl">omschrijving</trd>
      <trd lng="fr">p&eacute;riphrase</trd>
      <trdgrp lng="ru">
	<trd>&c_i;&c_n;&c_o;&c_s;&c_k;&c_a;&c_z;&c_a;&c_n;&c_i;&c_je;</trd>,
	<trd>&c_p;&c_je;&c_r;&c_i;&c_f;&c_r;&c_a;&c_z;&c_a;</trd>
      </trdgrp>
    </drv>

    <drv mrk="fraz.0parto">
      <kap><tld/>parto <fnt><bib>PMEG</bib></fnt></kap>
      <uzo tip="fak">GRA</uzo>
      <snc>
	<dif>
	  Vorto a&ubreve; grupo da vortoj, rolantaj kiel unuo en <tld/>o.
	</dif>
      </snc>
      <rim>
	PIV2 nomas tion <ctl>sintagma</ctl> &dash; ne tre oportune, &ccirc;ar tiu
	vorto estas tro &scirc;ar&gcirc;ita je sencoj lingvosciencaj (internacie
	&gcirc;i havas almena&ubreve; 5 aliajn sencojn, iuj el kiuj estas pli oftaj).
	<aut>Sergio Pokrovskij</aut>
      </rim>
      <trdgrp lng="ru">
	<trd>&c_s;&c_l;&c_o;&c_v;&c_o;&c_s;&c_o;&c_ch;&c_je;&c_t;&c_a;&c_n;&c_i;&c_je;</trd>,
	<trd>&c_ch;&c_l;&c_je;&c_n; &c_p;&c_r;&c_je;&c_d;&c_l;&c_o;&c_zh;&c_je;&c_n;&c_i;&c_ja;</trd>
      </trdgrp>
    </drv>

    <drv mrk="fraz.0rolo">
      <kap><tld/>rolo <fnt><bib>PMEG</bib></fnt></kap>
      <uzo tip="fak">GRA</uzo>
      <snc>
	<dif>
	  Funkcio de <tld/>parto en la tuta <tld/>o.
	</dif>
      </snc>
      <refgrp tip="sub">
	<ref cel="subjek.0o.GRA">subjekto<sncref/></ref>,
	<ref cel="predik1.0o.GRA">predikato<sncref/></ref>,
	<ref cel="objekt.0o.GRA">objekto<sncref/></ref>,
	<ref cel="komple1.0o.GRA">komplemento<sncref/></ref>
      </refgrp>
      <rim>
	PIV1 kaj PIV2 nomas tion <ctl>frazelemento</ctl> &dash; tio ne
	harmonias kun la sencoj de la vorto <ctl>elemento</ctl>.
	<aut>Sergio Pokrovskij</aut>
      </rim>
      <trd lng="ru">&c_ch;&c_l;&c_je;&c_n; &c_p;&c_r;&c_je;&c_d;&c_l;&c_o;&c_zh;&c_je;&c_n;&c_i;&c_ja;</trd>
    </drv>

  </art>
