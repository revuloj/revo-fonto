<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: be.xml,v 1.12 2023/09/08 18:29:33 revo Exp $">
<kap>
  <rad>be</rad>/i <fnt><bib>PIV1</bib></fnt>
</kap>

<drv mrk="be.0">
  <kap><tld/></kap>
  <gra><vspec>sonimito</vspec></gra>
  <snc mrk="be.0.KOMUNE">
    <dif>
      <ref tip="lst" cel="blek.0o" lst="voko:blekoj">Bleko</ref>
      de &scirc;afo:
      <ekz>
        &leftquot;<tld/>-e-e ! <tld/>-e-e !&rightquot; <tld/>is &scirc;afo &leftquot;&ccirc;u vi volas veni saltadi kun mi sur la kampo?&rightquot;
        <fnt>
           <aut>E. Carle, trad. Nikola kaj Martin Markarian</aut>
          <vrk><url ref="http://www.phys.ens.fr/~jacobsen/infanlibroj/Araneo.pdf">
          La tre okupita araneo</url></vrk>
          <lok>[vidita en 2023]</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <refgrp tip="hom">
    <ref cel="be1.0">be<klr> (ekkrio)</klr></ref>
  </refgrp>
  <trd lng="fr">b&ecirc;<klr> (b&ecirc;lement)</klr></trd>
</drv>

<drv mrk="be.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="be.0i.ZOO">
    <dif>
      <ref tip="super" cel="blek.0i.beste">Bleki</ref> kiel &scirc;afo:
      <ekz>
        la &scirc;afido diskuris lertpiede tra anta&ubreve;domejo kaj legom&gcirc;ardeno,
        saltis sur la tegmenton kaj <tld/>adis
        <fnt>
          <aut>H. Laxness, trad. B. Ragnarsson</aut>
          <vrk>Sendependaj homoj</vrk>
          <lok>2007</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_l;&c_ja;&c_ja;&c_c;&c_mol;</trd>
  <trd lng="ca">belar</trd>
  <trdgrp lng="cs">
    <trd>be&ccaron;et</trd>,
    <trd>bre&ccaron;et</trd>
  </trdgrp>
  <trd lng="fr">b&ecirc;ler</trd>
  <trd lng="he">&#x5DC;&#x5E4;&#x5E2;&#x5D5;&#x5EA;</trd>
  <trd lng="hu">b&eacute;get</trd>
  <trd lng="nl">blaten</trd>
  <trd lng="pl">becze&cacute;</trd>
  <trd lng="ru">&c_b;&c_l;&c_je;&c_ja;&c_t;&c_mol;</trd>
  <trd lng="sk">b&lcaron;a&ccaron;a&tcaron;</trd>
</drv>

<drv mrk="be.0o">
  <kap><tld/>o</kap>
  <snc mrk="be.0o.ZOO">
    <dif>
      Bruo simila al &scirc;afbleko:
      <ekz>
        mi a&ubreve;das nur multajn <tld/>ojn de &scirc;afoj kaj
        &scirc;afinoj
        <fnt>
          <bib>DonKihxoto</bib>
          <lok>&ccirc;apitro 18a, p. 128a</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_l;&c_ja;&c_ja;&c_n;&c_mol;&c_n;&c_je;</trd>
  <trd lng="ca">bel</trd>
  <trd lng="cs">notov&eacute; znam&eacute;nko b</trd>
  <trd lng="fr">b&ecirc;lement</trd>
  <trd lng="hu">b&eacute;get&eacute;s</trd>
  <trdgrp lng="pl">
    <trd>beczenie</trd>,
    <trd>bek</trd>
  </trdgrp>
  <trd lng="ru">&c_b;&c_l;&c_je;&c_ja;&c_n;&c_mol;&c_je;</trd>
  <trd lng="sk">notov&eacute; znamienko b</trd>
</drv>
</art>

