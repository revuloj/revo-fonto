<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: peripeti.xml,v 1.10 2023/11/02 06:30:06 revo Exp $">
<kap>
  <rad>peripeti</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="peripeti.0o">
  <kap><tld/>o</kap>
  <snc mrk="peripeti.0o.BELE">
    <dif>
      Surpriza <ref tip="super" cel="punkt.turno0o">turnopunkto</ref> en la sorto de homo
      (en la mezo de dramo enkondukanta la katastrofon respektive elnodi&gcirc;on de la problemo):
      <ekz>
        la intrigo <klr>[&#8230;]</klr> donas ian stre&ccirc;itecon kaj <tld/>an psikologion:
        <klr>[&#8230;]</klr> voja&gcirc;inta edzo ka&scirc;as siajn trajtojn per barbo por tenti sian
        propran edzinon
        <fnt>
          <bib>Plumamikoj</bib>
          <lok>Dramoj en esperanto</lok>
        </fnt>;
      </ekz>
      <ekz>
        la maljuna bardo rakontis pri historiaj <tld/>oj de sia popolo
        <fnt>
          <aut>Vladimir Glazunov</aut>,
          <vrk><url ref="http://donh.best.vwh.net/Esperanto/Literaturo/Noveloj/Cxarmo.html"
              >La &ccirc;armo de &Ccirc;ielmontaro</url></vrk>,
          <lok>Fonto, numero 37a</lok>
        </fnt>;
      </ekz>
      <ekz>
        post multaj <tld/>oj indaj je aventuraj romanoj, kun pluraj
        kadavroj, intrigoj kaj koruptoj, la justo venkas
        <fnt>
          <aut>Artur E. Iltis</aut>,
          <vrk><url ref="http://www.china.org.cn/world/shi-read/recenzoj/06.htm"
              >Nova, alloga invito uzi la ponton</url></vrk>,
          <lok>&Ccirc;ina Interreta Informa Centro, [vidita je 2006-05-03]</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="klimaks.0o.BELE">klimakso<sncref/></ref>,
      <ref cel="nod.el0igxo.BELE">elnodi&gcirc;o<sncref/></ref>,
      <ref cel="pint.0umo">pintumo</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_p;&c_e;&c_r;&c_y;&c_p;&c_e;&c_t;&c_y;&c_ja;</trd>
  <trd lng="cs">peripetie</trd>
  <trdgrp lng="de">
    <trd>Wendung</trd>,
    <trd>Wendepunkt</trd>,
    <trd>Peripetie</trd>
  </trdgrp>
  <trd lng="fr">p&eacute;rip&eacute;tie</trd>
  <trd lng="grc">&pi;&epsilon;&rho;&jota;&pi;&epsilon_ton;&tau;&epsilon;&jota;&alfa;</trd>
  <trd lng="nl">peripetie</trd>
  <trd lng="pl">perypetie</trd>
  <trd lng="pt">perip&eacute;cia</trd>
  <trdgrp lng="sk">
    <trd>ne&ccaron;akan&yacute; obrat</trd>,
    <trd>n&aacute;hla zmena</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_p;&c_je;&c_r;&c_i;&c_p;&c_je;&c_t;&c_ib;&c_ja;</trd>,
    <trd>&c_n;&c_je;&c_s;&c_p;&c_o;&c_d;&c_ib;&c_v;&c_a;&c_n;&c_i;&c_j; &c_p;&c_o;&c_v;&c_o;&c_r;&c_o;&c_t;</trd>,
    <trd>&c_u;&c_s;&c_k;&c_l;&c_a;&c_d;&c_n;&c_je;&c_n;&c_n;&c_ja;</trd>
  </trdgrp>
</drv>
</art>

