<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: pirr.xml,v 1.2 2022/03/26 10:43:37 afido Exp $">
    <kap>
      <rad>Pirr</rad>/o <fnt><bib>PIV1</bib></fnt>
    </kap>
    <drv mrk="pirr.0o">
      <kap><tld/>o</kap>
      <snc mrk="pirr.0o.NOM">
        <uzo tip="fak">NOM</uzo>
        <dif>
          Greka alnomo (etimologie &gcirc;i signigas <ctl>fajra</ctl>, <ctl>rufa</ctl>). 
        </dif>
        <subsnc mrk="pirr.0o.Ahxilido">
          <uzo tip="fak">BELE</uzo>
          <dif>
            Filo de A&hcirc;ilo, konkerinto de Trojo:
            <ekz>
              la sanga glav&#x2019; de <tld/>o //
              Hakadis la Priamon malfeli&ccirc;an
              <fnt>
                <aut>&Scirc;ekspiro, tr. &Z;</aut>:
                <vrk>Hamleto, Re&gcirc;ido de Danujo</vrk>. <lok>2:2</lok>.
                </fnt>;
            </ekz>
          </dif>
        </subsnc>
        <subsnc mrk="pirr.0o.Epira">
          <uzo tip="fak">PERS</uzo>
          <uzo tip="fak">HIS</uzo>
          <dif>
            Re&gcirc;o de Epiro (307&mdash;302 kaj 296&mdash;272 a.K.), unu el la plej
            fortaj kontra&ubreve;uloj de la frua Romio kaj unu el la plej
            eminentaj militestroj de la antikva periodo:
            <ekz>
              <uzo tip="stl">FRAZ</uzo>
              Tio estos vere la <ind><tld/>a venko</ind>
              <fnt><aut>D.L. Armand</aut>:
                <vrk>Taskoj de homo lige kun transformado de la naturo</vrk>
                <lok>Scienca Revuo, vol. 28, &#x2116;4 (126), 30.08.1977, p. 148</lok>
              </fnt>
              <klr>(venko kies tro granda kosto estas neakceptebla,
                kia estis la venko fare de <tld/>o en la batalo &ccirc;e
                A&ubreve;skulo en 279 a.K.)</klr>
              <trd lng="lat">victoria pyrrhica</trd>
              <trd lng="ru">&c_P;&c_i;&c_r;&c_r;&c_o;&c_v;&c_a; &c_p;&c_o;&c_b;&c_je;&c_d;&c_a;</trd>  
            </ekz>
          </dif>
        </subsnc>
      </snc>
      <trd lng="en">Pyrrhus</trd>
      <trd lng="grc">&Pi;&ypsilon_ton;&rho;&rho;&omikron;&sigma_fina;</trd>
      <trd lng="lat">Pyrrhus</trd>
      <trd lng="pl">Pyrrus</trd>
      <trd lng="ru">&c_P;&c_i;&c_r;&c_r;</trd>
      <trd lng="uk">&#x41F;&#x456;&#x440;&#x440; (&#x441;&#x438;&#x43D; &#x410;&#x445;&#x456;&#x43B;&#x430;)</trd>
</drv>
  </art>

