    <trd>absoudre<klr tip="ind"> (jur.)</klr></trd>,
    <trd>acquitter<klr tip="ind"> (jur.)</klr></trd>,
    <trd>blanchir<klr tip="ind"> (jur.)</klr></trd>,
    <trd>disculper<klr tip="ind"> (jur.)</klr></trd>,
    <trd>innocenter<klr tip="ind"> (jur.)</klr></trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>acquit</trd>,
    <trd>find not guilty</trd>,
    <trd>issue <ind>judgement</ind> for <klr>(p.p. nekrima
    procedo)</klr></trd>
  </trdgrp>
  <trd lng="hu">felment <klr tip="amb">(&iacute;t&eacute;let al&oacute;l)</klr></trd>
  <trd lng="ja">&#x7121;&#x7F6A;&#x3092;&#x5BA3;&#x544A;&#x3059;&#x308B;  <pr>&#x3080;&#x3056;&#x3044;&#x3092;&#x305B;&#x3093;&#x3053;&#x304F;&#x3059;&#x308B;</pr></trd>
  <trd lng="nl">onschuldig verklaren</trd>
  <trdgrp lng="pl">
    <trd>darowa&cacute; win&eogonek;</trd>,
    <trd>rozgrzesza&cacute;</trd>,
    <trd>u&lstroke;askawi&cacute;</trd>,
    <trd>uniewinni&cacute;</trd>
  </trdgrp>
