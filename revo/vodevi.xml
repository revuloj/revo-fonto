<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: vodevi.xml,v 1.24 2023/09/05 09:43:56 revo Exp $">
<kap>
  <rad>vodevil</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="vodevi.0o">
  <kap><tld/>o</kap>
  <snc mrk="vodevi.0o.TEA">
    <uzo tip="fak">TEA</uzo>
    <dif>
      Facila komedia <ref tip="super" cel="teatr.0ajxo">teatra&jcirc;eto</ref>
      kun strofkantoj, populara en la 19a jc:
      <ekz>
        mi estas konata kun beletaj aktorinoj,
        mi ja anka&ubreve; verkas diversajn <tld/>etojn
        <fnt><bib>Revizoro</bib>, <lok>akto 3a, sceno 6a</lok></fnt>;
      </ekz>
      <ekz>
        triopo multe pli respektinda ol tiu kiun vi renkontas en okcidenta <tld/>o
        <fnt>
          <vrk><url ref="&Tekstaro;?nomo=ondo-de-esperanto">Kvin spektantoj pridemandas a&ubreve;toron</url></vrk>
          <lok>La Ondo de Esperanto 2001 &ndash; 2004 </lok>
        </fnt>;
      </ekz>
      <ekz>
        kredeble lia plej konata <tld/>o estas La holanda pupo
        <fnt>
          <aut>Marjorie Boulton</aut>
          <vrk><url ref="&Tekstaro;?nomo=ne-nur-leteroj-de-plumamiko">Ne nur leteroj de plumamikoj</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <rim mrk="vodevi.0o.RIM_ARK">
      Malnova verko prezentas la formon <em>va&ubreve;devilo</em>:
      <ekz>
        &gcirc;i estas &scirc;erca&jcirc;o, same kiel la va&ubreve;devilo
        kun mia &scirc;ajna morto
        <fnt>
         <aut>N. Hohlov</aut>,
         <vrk><url ref="http://esperanto.net/literaturo/dram/libr/mortdelegit.pdf">
         La Morto de la Delegito de U.E.A.</url></vrk>,
         <lok>1924</lok>
        </fnt>.
      </ekz>
    </rim>
    <refgrp tip="vid">
       <ref cel="kanzon.0o">kanzono</ref>,
       <ref cel="revu.0o.TEA">revuo<sncref/></ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_v;&c_a;&c_d;&c_e;&c_v;&c_ib;&c_l;&c_mol;</trd>
  <trd lng="bg">&c_v;&c_o;&c_d;&c_je;&c_v;&c_i;&c_l;</trd>
  <trd lng="ca">vodevil</trd>
  <trdgrp lng="cs">
    <trd>pop&ecaron;vek</trd>,
    <trd>vaudeville</trd>
  </trdgrp>
  <trd lng="de">Vaudeville</trd>
  <trd lng="en">vaudeville</trd>
  <trd lng="es">vodevil</trd>
  <trd lng="fr">vaudeville</trd>
  <trd lng="hu">zen&eacute;s <ind>boh&oacute;zat</ind></trd>
  <trd lng="ja">&#x30DC;&#x30FC;&#x30C9;&#x30D3;&#x30EB;</trd>
  <trd lng="nl">vaudeville</trd>
  <trdgrp lng="pt">
   <trd>vaudeville</trd>
  </trdgrp>
  <trd lng="ru">&c_v;&c_o;&c_d;&c_je;&c_v;&c_i;&c_l;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>popevok</trd>,
    <trd>vaudeville</trd>
  </trdgrp>
  <trd lng="uk">&#x432;&#x43E;&#x434;&#x435;&#x432;&#x456;&#x43B;&#x44C;</trd>
</drv>
</art>
