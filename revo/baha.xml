<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>baha</rad>/o <fnt><bib>NePiv</bib></fnt>
</kap>

<drv mrk="baha.B0o">
  <kap><tld lit="B"/>o</kap>
  <snc mrk="baha.B0o.REL">
    <uzo tip="fak">PERS</uzo>
    <uzo tip="fak">REL</uzo>
    <dif>
      Kromnomo de la fondinto de <tld/>ismo (1817 &ndash; 1892), &ccirc;efa
      revelaciinto de ties instruoj.
    </dif>
  </snc>
  <trd lng="ca">Bah&#257;' All&#257;h</trd>
  <trd lng="fa">&a_b;&a_h;&a_A;&a_hamza;&a_A;&a_l;&a_l;&a_h;</trd>
  <trdgrp lng="fr">
    <trd>Bah&acirc;' All&acirc;h</trd>,
    <trd>Bah&acirc;' Ull&acirc;h</trd>
  </trdgrp>
  <trd lng="hu">Bah&aacute;ull&aacute;</trd>
  <trd lng="it">Bah&aacute;'u'll&aacute;h</trd>
</drv>

<drv mrk="baha.0ano">
  <kap><tld/>ano</kap>
  <snc mrk="baha.0ano.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      Homo akceptanta la doktrinon kaj praktikon de <tld/>ismo.
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_a;&c_h;&c_a;&c_ib;&c_s;&c_t;</trd>
  <trd lng="ca">bahaista</trd>
  <trd lng="de">Bahai</trd>
  <trd lng="fa">&a_b;&a_h;&a_A;&f_y;&f_y;</trd>
  <trd lng="fr">baha&iuml;</trd>
  <trd lng="hu">bah&aacute;&iacute;</trd>
  <trd lng="it">bahai</trd>
  <trd lng="ru">&c_b;&c_a;&c_h;&c_a;&c_i;&c_s;&c_t;</trd>
</drv>

<drv mrk="baha.0ismo">
  <kap><tld/>ismo</kap>
  <snc mrk="baha.0ismo.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      Irandevena <ref tip="lst" cel="religi.0o.REL"
      lst="voko:religioj">religio</ref>
      ekinta
      en la 19a jarcento unue sub la nomo babismo, akceptanta diajn
      instruantojn el pluraj aliaj religioj (Budao, Jesuo, Mohamedo...),
      kun &ccirc;efinstruoj en la verkoj de <tld lit="B"/>o:
      <ekz>
        religiaj grupetoj, kies ideoj envenis la landon <klr>...</klr>:
        scientologio, Kri&scirc;na-movado, <tld/>ismo
        <klr>...</klr><fnt><aut>Saliko</aut>, <vrk>Je kio ni
        kredas?</vrk>, <bib>Monato</bib>, <lok>jaro 2001a, numero 11a,
        p.
        12a</lok></fnt>
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_a;&c_h;&c_a;&c_ib;&c_z;&c_m;</trd>
  <trd lng="ca">bahaisme</trd>
  <trd lng="de">Bahaismus</trd>
  <trdgrp lng="fa">
    <trd>&a_b;&a_h;&a_A;&f_y;&f_y;&f_g;&a_r;&f_y;</trd>,
    <trd>&a_b;&a_h;&a_A;&a_y_hamza;&f_y;&a_t;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>baha&iuml;sme</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>bah&aacute;izmus</trd>,
    <trd>bah&aacute;&iacute; hit</trd>
  </trdgrp>
  <trdgrp lng="it">
    <trd>fede <ind>bahai</ind></trd>, 
    <trd>bahai<klr> (religione)</klr></trd>, 
  </trdgrp>
  <trd lng="ru">&c_b;&c_a;&c_h;&c_a;&c_i;&c_z;&c_m;</trd>
</drv>
</art>
