        legantaro Esperanto
        <fnt>
          <bib>Monato</bib>
          <aut>Roberto Pigro</aut>
          <vrk><url ref="&Monato;/2014/011278.php"
              >Vortaro intuicia, horizonto internacia</url></vrk>
          <lok>2014</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="de">Signuno</trd>
    <trd lng="en">Signuno</trd>
    <trd lng="fr">Signuno</trd>
  </snc>
