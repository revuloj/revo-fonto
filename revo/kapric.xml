<drv mrk="kapric.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <dif>
      Subita, nekonstanta, neanta&ubreve;videbla kaj senmotiva volo:
      <ekz>
        ili fordonis sin al siaj <tld/>oj
        <fnt>
          <bib>MT</bib>
          <lok>Psalmaro 106:14</lok>
        </fnt>;
      </ekz>
      <ekz>
        en sia kolero ili mortigis viron kaj pro sia <tld/>o ili kripligis bovon
        <fnt>
          <bib>MT</bib>
          <lok>Genezo 49:6</lok>
        </fnt>;
      </ekz>
      <ekz>
        tedis sidi hejme kaj <klr>[&scirc;i]</klr> volis rajdi anta&ubreve;e norden kaj poste en alia
        direkto, kien &scirc;ia <tld/>o &scirc;in pelos
        <fnt>
          <bib>Fab2</bib>
          <lok>Ne&gcirc;a re&gcirc;ino</lok>
        </fnt>;
      </ekz>
      <ekz>
        nur diino povis pacience toleri &scirc;iajn <tld/>ojn
        <fnt>
          <bib>Far2</bib>
          <lok>&Ccirc;apitro XIV</lok>
        </fnt>!
      </ekz>
      <ekz>
        ne ekzistas juneco sen <tld/>oj, nek maljuneco sen malicoj
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>oj de grandsinjoroj kaj multego da kreditoroj
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <klr>[la]</klr> <tld/>oj de la sorto
        <fnt>
          <bib>Rabistoj</bib>
          <lok>Akto Kvara</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="humor.0o.animstato">humoro<sncref/></ref>,
      <ref cel="musx.0o">mu&scirc;o</ref>,
      <ref cel="gril.0o">grilo</ref>
    </refgrp>
    <trd lng="ru">&c_b;&c_l;&c_a;&c_zh;&c_mol;</trd>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_p;&c_r;&c_y;&c_z;</trd>
  <trdgrp lng="ca">
    <trd>caprici</trd>,
    <trd>antull</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>kapric</trd>,
    <trd>kaprice</trd>,
    <trd>rozmar</trd>,
    <trd>vrtoch</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Laune</trd>,
    <trd>Grille</trd>,
    <trd>Kaprice</trd>,
    <trd>Kaprize</trd>
  </trdgrp>
  <trd lng="es">capricho</trd>
  <trdgrp lng="fr">
    <trd>caprice</trd>,
    <trd>coup de <ind>t&ecirc;te</ind></trd>,
    <trd>foucade</trd>,
    <trd>lubie</trd>
  </trdgrp>
  <trd lng="hu">szesz&eacute;ly</trd>
  <trdgrp lng="ja">
    <trd>&#x6C17;&#x307E;&#x3050;&#x308C;  <pr>&#x304D;&#x307E;&#x3050;&#x308C;</pr></trd>,
    <trd>&#x79FB;&#x308A;&#x6C17;  <pr>&#x3046;&#x3064;&#x308A;&#x304E;</pr></trd>,
    <trd>&#x3080;&#x3089;&#x6C17;  <pr>&#x3080;&#x3089;&#x304D;</pr></trd>,
    <trd>&#x6025;&#x5909;  <pr>&#x304D;&#x3085;&#x3046;&#x3078;&#x3093;</pr></trd>
  </trdgrp>
  <trd lng="nl">gril</trd>
  <trdgrp lng="pl">
    <trd>grymas</trd>,
    <trd>kaprys</trd>,
    <trd>zachcianka</trd>
  </trdgrp>
  <trd lng="ro">capriciu</trd>
  <trd lng="ru">&c_k;&c_a;&c_p;&c_r;&c_i;&c_z;</trd>
  <trd lng="sk">vrtoch</trd>
  <trdgrp lng="uk">
    <trd>&#x43F;&#x440;&#x438;&#x43C;&#x445;&#x430;</trd>,
    <trd>&#x43A;&#x430;&#x43F;&#x440;&#x438;&#x437;</trd>
  </trdgrp>
</drv>

<drv mrk="kapric.0a">
  <kap><tld/>a, <var><kap><tld/>ema</kap></var></kap>
  <snc mrk="kapric.0a.iu">
    <dif>
      Aganta la&ubreve; <tld/>oj:
      <ekz>
        &scirc;iaj bu&scirc;o kaj rigardo montras personon <tld/>an kaj malpaceman
        <fnt>
          <bib>IK</bib>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>a fian&ccirc;ino restos eterne fra&ubreve;lino
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        kia <tld/>ema homo, li pensis, kion li donas per unu mano, tion li reprenas per
        la alia, tute sensence
        <fnt>
          <bib>ElektFab</bib>
          <lok>Kamarado Gaja</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;ia kostumo konsistis el paro da grandegaj <tld/>aj &scirc;uoj, kiuj &ccirc;iam direktadis
        sin alie ol &scirc;iaj piedoj
        <fnt>
          <bib>BdV</bib>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        vi, estante homo instruita, scias tre bone, kiel <tld/>a estas la naturo
        <fnt>
          <bib>Fab2</bib>
          <lok>La ombro</lok>
        </fnt>.
      </ekz>    
    </dif>  
    <refgrp tip="vid">
      <ref cel="arbitr.0a">arbitra</ref>,
      <ref cel="fantaz.0a">fantazia</ref>,
      <ref cel="frenez.0a">freneza</ref>,
      <ref cel="strang.0a">stranga</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_p;&c_r;&c_y;&c_z;&c_n;&c_y;</trd>
  <trd lng="ca">caprici&oacute;s</trd>
  <trdgrp lng="de">
    <trd>launisch</trd>,
    <trd>launenhaft</trd>,
    <trd>grillenhaft</trd>,
    <trd>kaprizi&ouml;s</trd>
  </trdgrp>
  <trd lng="es">caprichoso</trd>
  <trd lng="fr">capricieux</trd>
  <trd lng="hu">szesz&eacute;lyes</trd>
  <trdgrp lng="ja">
    <trd>&#x6C17;&#x307E;&#x3050;&#x308C;&#x306A;  <pr>&#x304D;&#x307E;&#x3050;&#x308C;&#x306A;</pr></trd>,
    <trd>&#x79FB;&#x308A;&#x6C17;&#x306A;  <pr>&#x3046;&#x3064;&#x308A;&#x304E;&#x306A;</pr></trd>,
    <trd>&#x4E88;&#x6E2C;&#x3067;&#x304D;&#x306A;&#x3044;  <pr>&#x3088;&#x305D;&#x304F;&#x3067;&#x304D;&#x306A;&#x3044;</pr></trd>
  </trdgrp>
  <trd lng="nl">grillig<klr tip="ind"> (bn.)</klr></trd>
  <trd lng="pl">kapry&sacute;ny</trd>
  <trd lng="ro">bizar</trd>
  <trd lng="ru">&c_k;&c_a;&c_p;&c_r;&c_i;&c_z;&c_n;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>n&aacute;ladov&yacute;</trd>,
    <trd>rozmarn&yacute;</trd>,
    <trd>vrto&scaron;iv&yacute;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>nevypo&ccaron;itateln&yacute;</trd>,
    <trd>n&aacute;ladov&yacute;</trd>,
    <trd>rozmarn&yacute;</trd>,
    <trd>um&iacute;n&ecaron;n&yacute;</trd>,
    <trd>vrto&scaron;iv&yacute;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x43F;&#x440;&#x438;&#x43C;&#x445;&#x43B;&#x438;&#x432;&#x438;&#x439;</trd>,
    <trd>&#x432;&#x435;&#x440;&#x435;&#x434;&#x43B;&#x438;&#x432;&#x438;&#x439;</trd>,
    <trd>&#x43A;&#x430;&#x43F;&#x440;&#x438;&#x437;&#x43D;&#x438;&#x439;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x4EFB;&#x6027; <pr>r&#xE8;nx&#xEC;ng</pr></trd>,
    <trd>&#x559C;&#x6012;&#x65E0;&#x5E38; <pr>x&#x1D0;n&#xF9;w&#xFA;ch&#xE1;ng</pr></trd>
  </trdgrp>
</drv>

<drv mrk="kapric.0e">
  <kap><tld/>e</kap>
  <snc>
    <dif>
      En <tld/>a maniero:
      <ekz>
        vento <tld/>e blovis
        <fnt>
          <aut>Raymond Schwartz</aut>
          <vrk><url ref="&Steloj;butiko">La Stranga Butiko</url></vrk>
          <lok>Tro Homa Sorto de iu Ne&gcirc;homo</lok>
        </fnt>;
      </ekz>
      <ekz>
        la granda pleneco de vivo libera, gaja <klr>[&#x2026;]</klr> kaj <tld/>e ekscentra
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        viaj novaj mastroj <tld/>e, la&ubreve;vole, memserve <klr>[&#x2026;]</klr> determinos vian
        sorton
        <fnt>
          <bib>Monato</bib>
          <aut>Paul Gubbins</aut>
          <vrk><url ref="&Monato;/2003/008119.html">Taglibro de l' milito ... el la lando de &Scirc;ekspiro</url></vrk>
          <lok>2003</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_p;&c_r;&c_y;&c_z;&c_n;&c_a;</trd>
  <trd lng="ca">capriciosament</trd>
  <trd lng="cs">rozmarn&ecaron;</trd>
  <trdgrp lng="de">
    <trd>launisch</trd>,
    <trd>launenhaft</trd>,
    <trd>grillenhaft</trd>,
    <trd>kaprizi&ouml;s</trd>
  </trdgrp>
  <trd lng="es">caprichosamente</trd>
  <trd lng="fr">capricieusement</trd>
  <trd lng="hu">szesz&eacute;lyesen</trd>
  <trdgrp lng="ja">
    <trd>&#x6C17;&#x307E;&#x3050;&#x308C;&#x306B;  <pr>&#x304D;&#x307E;&#x3050;&#x308C;&#x306B;</pr></trd>,
    <trd>&#x4E0D;&#x898F;&#x5247;&#x306B;  <pr>&#x3075;&#x304D;&#x305D;&#x304F;&#x306B;</pr></trd>
  </trdgrp>
  <trd lng="nl">grillig<klr tip="ind"> (bw.)</klr></trd>
  <trd lng="pl">kapry&sacute;nie</trd>
  <trd lng="ru">&c_k;&c_a;&c_p;&c_r;&c_i;&c_z;&c_n;&c_o;</trd>
  <trd lng="sk">rozmarne</trd>
  <trdgrp lng="uk">
    <trd>&#x43F;&#x440;&#x438;&#x43C;&#x445;&#x43B;&#x438;&#x432;&#x43E;</trd>,
    <trd>&#x432;&#x435;&#x440;&#x435;&#x434;&#x43B;&#x438;&#x432;&#x43E;</trd>,
    <trd>&#x43A;&#x430;&#x43F;&#x440;&#x438;&#x437;&#x43D;&#x43E;</trd>
  </trdgrp>
</drv>

<drv mrk="kapric.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Havi <tld/>ojn:
      <ekz>
        tie oni enterigis la homojn, kiuj <tld/>is
        <fnt>
          <bib>MT</bib>
          <lok>Nombroj 11:34</lok>
        </fnt>;
      </ekz>
      <ekz>
        &ccirc;e stomako malsata ne <tld/>as palato
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la vetero fajfas pri fakuloj kaj <tld/>as la&ubreve;vole
        <fnt>
          <bib>Monato</bib>
          <aut>Stefan Maul</aut>
          <vrk><url ref="&Monato;/2005/008633.php">Polvo</url></vrk>
          <lok>2005</lok>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la usona dolaro <klr>[&#x2026;]</klr> ofte <tld/>is dum la pasintaj jaroj
        <fnt>
          <bib>Monato</bib>
          <aut>Stefan Maul</aut>
          <vrk><url ref="&Monato;/2005/008595.php">Pretekstoj kontra&ubreve; pakto</url></vrk>
          <lok>2005</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
       <ref cel="vag.0i">vagi</ref>,
       <ref cel="vari.0i">varii</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_p;&c_r;&c_y;&c_z;&c_mol;&c_n;&c_ib;&c_ch;&c_a;&c_c;&c_mol;</trd>
  <trdgrp lng="ca">
    <trd>antullar-se</trd>,
    <trd>tindre capritx (de)</trd>
  </trdgrp>
  <trd lng="cs">m&iacute;t vrtochy</trd>
  <trdgrp lng="de">
    <trd>launisch sein</trd>,
    <trd>launenhaft sein</trd>,
    <trd>sich launenhaft <ind>benehmen</ind></trd>,
    <trd>kaprizi&ouml;s sein</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>faire des <ind>caprice</ind>s</trd>,
    <trd>faire le <ind>difficile</ind></trd>,
    <trd>faire des <ind>mani&egrave;re</ind>s</trd>,
    <trd><ind>jouer</ind> l'enfant g&acirc;t&eacute;</trd>
  </trdgrp>
  <trd lng="hu">szesz&eacute;lyeskedik</trd>
  <trd lng="ja">&#x6C17;&#x307E;&#x3050;&#x308C;&#x3067;&#x3042;&#x308B;  <pr>&#x304D;&#x307E;&#x3050;&#x308C;&#x3067;&#x3042;&#x308B;</pr></trd>
  <trd lng="nl">nukken vertonen</trd>
  <trd lng="pl">kaprysy <klr> {l.mn.}</klr>mie&cacute;</trd>
  <trd lng="ru">&c_k;&c_a;&c_p;&c_r;&c_i;&c_z;&c_n;&c_i;&c_ch;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>by&tcaron; rozmarn&yacute;</trd>,
    <trd>ma&tcaron; vrtochy</trd>
  </trdgrp>
  <trd lng="uk">&#x432;&#x435;&#x440;&#x435;&#x434;&#x443;&#x432;&#x430;&#x442;&#x438;</trd>
</drv>
