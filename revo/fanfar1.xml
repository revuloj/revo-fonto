<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>fanfaron</rad>/i
</kap>
<drv mrk="fanfar1.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>x</vspec></gra>
  <snc num="1">
    <dif>
      Sin glori pro afektataj meritoj, kiujn oni ne posedas:
      <ekz>
        <tld/>i pri kura&gcirc;o<fnt>Z</fnt>, potenco<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>i kura&gcirc;on<fnt>Z</fnt>, potencon<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>i per citatoj<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>i per dono, kiun oni ne faras
        <fnt>(<aut>trad. Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
        <lok>Sentencoj 25, 14</lok>)</fnt>;
      </ekz>
      <ekz>
        li <tld/>is, ke neniu povos lin venki<fnt>Z</fnt>.
      </ekz> 
    </dif>
    <refgrp tip="vid">
      <ref cel="arog.0i">arogi</ref>,
      <ref cel="preten.0i">pretendi</ref>.
    </refgrp>
    <refgrp tip="vid">
      <ref cel="son.0i">soni</ref>,
      <ref cel="knar.0i">knari</ref>.
    </refgrp>
  </snc>
  <snc num="2">
    <dif>
      Sin mem bombaste la&ubreve;di:
      <ekz>
        ne <tld/>u irante, <tld/>u revenante
        <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>;
      </ekz>
      <ekz>
        <tld/>i per sia granda ri&ccirc;eco
        <fnt>(<aut>trad. Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
        <lok>Psalmaro 49, 5</lok>)</fnt>.
      </ekz> 
    </dif>
    <refgrp tip="vid">
      <ref cel="fier.0i">fieri</ref>,
      <ref cel="glor">sin glori</ref>,
      <ref cel="parad.0i">paradi</ref>,
      <ref cel="pav">pavi</ref>,
      <ref cel="sxvel">brusto&scirc;veli</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="de">
    <trd>angeben</trd>,
    <trd>sich <ind>br&uuml;sten</ind></trd>
  </trdgrp>
  <trd lng="en">boast</trd>
  <trdgrp lng="fr">
    <trd>fanfaronner</trd>,
    <trd>se <ind>vanter</ind><klr tip="ind"> (plastronner)</klr></trd>,
    <trd>plastronner<klr tip="ind"> (se vanter)</klr></trd></trdgrp> 
  <trdgrp lng="ru">
    <trd>&c_h;&c_v;&c_a;&c_s;&c_t;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_b;&c_a;&c_h;&c_v;&c_a;&c_l;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
  </trdgrp>
</drv>
<drv mrk="fanfar1.0ado">
  <kap><tld/>ado</kap>
  <snc>
    <dif>
      Sintenado de <tld/>ulo:
      <ekz>
        li tion faris nur pro <tld/>ado.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">vantardise</trd>
  <trdgrp lng="ru">
    <trd>&c_h;&c_v;&c_a;&c_s;&c_t;&c_o;&c_v;&c_s;&c_t;&c_v;&c_o;</trd>,
    <trd>&c_b;&c_a;&c_h;&c_v;&c_a;&c_l;&c_mol;&c_s;&c_t;&c_v;&c_o;</trd>
  </trdgrp>
</drv>
<drv mrk="fanfar1.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc>
    <dif>
      Ago de <tld/>ulo:
      <ekz>
        tiu minaco estas nur <tld/>a&jcirc;o.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Angeberei</trd>
  <trd lng="fr">vantardise</trd>
  <trdgrp lng="ru">
    <trd>&c_h;&c_v;&c_a;&c_s;&c_t;&c_o;&c_v;&c_s;&c_t;&c_v;&c_o;</trd>,
    <trd>&c_b;&c_a;&c_h;&c_v;&c_a;&c_l;&c_mol;&c_s;&c_t;&c_v;&c_o;</trd>
  </trdgrp>
</drv>
<drv mrk="fanfar1.0ulo">
  <kap><tld/>ulo</kap>
  <snc>
    <dif>
      <tld lit="F"/>anta homo.
    </dif>
    <refgrp tip="vid">
      <ref cel="modest">malmodesta</ref>,
      <ref cel="arogan.0a">aroganta</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Angeber</trd>
  <trdgrp lng="fr">
    <trd>fanfaron</trd>,
    <trd>vantard</trd></trdgrp> 
  <trdgrp lng="ru">
    <trd>&c_h;&c_v;&c_a;&c_s;&c_t;&c_u;&c_n;</trd>,
    <trd>&c_b;&c_a;&c_h;&c_v;&c_a;&c_l;</trd>,
    <trd>&c_f;&c_a;&c_n;&c_f;&c_a;&c_r;&c_o;&c_n;</trd>
  </trdgrp>
</drv>
</art>
