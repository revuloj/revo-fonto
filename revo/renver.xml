<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>renvers</rad>/i
</kap>
<drv mrk="renver.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Faligi ion a&ubreve; iun starantan:
      <ekz>
        <tld/>i inkujon, meblon, muron;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>i ministraron, re&gcirc;on;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la tablo staras malrekte kaj kredeble balda&ubreve;
        <tld/>i&gcirc;os<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la veturilo <tld/>i&gcirc;is;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la &scirc;ipo <tld/>i&gcirc;is sur la rivero.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>umkippen</trd>,
      <trd>umwerfen</trd>,
      <trd>umst&uuml;lpen</trd>,
      <trd>umst&uuml;rzen</trd>
    </trdgrp>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Ruinigi, detrui, ekstermi:
      <ekz>
        tio &ccirc;i <tld/>as tre vastigitan opinion;
      </ekz>
      <ekz>
        la malvirtuloj <tld/>i&gcirc;os kaj pereos, sed la domo de virtuloj
        staros forte<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_z;&c_r;&c_y;&c_n;&c_u;&c_c;&c_mol;</trd>,
      <trd>&c_s;&c_k;&c_ib;&c_n;&c_u;&c_c;&c_mol;</trd>,
      <trd>&c_z;&c_mol;&c_v;&c_je;&c_r;&c_g;&c_n;&c_u;&c_c;&c_mol;</trd>,
      <trd>&c_a;&c_b;&c_v;&c_je;&c_r;&c_g;&c_n;&c_u;&c_c;&c_mol; <klr>(opinion)</klr></trd>
    </trdgrp>
    <trd lng="ru">&c_n;&c_i;&c_s;&c_p;&c_r;&c_o;&c_v;&c_je;&c_r;&c_g;&c_n;&c_u;&c_t;&c_mol;</trd>
  </snc>
  <snc>
    <dif>
      Inversigi:
      <ekz>
        <tld/>i la ordon de listo;
      </ekz>
      <ekz>
        <tld/>i la randon de &ccirc;apelo.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_je;&c_r;&c_a;&c_k;&c_u;&c_l;&c_ib;&c_c;&c_mol;</trd>,
    <trd>&c_p;&c_je;&c_r;&c_a;&c_v;&c_ja;&c_r;&c_n;&c_u;&c_c;&c_mol;</trd>,
    <trd>&c_a;&c_b;&c_ja;&c_r;&c_n;&c_u;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="de">umdrehen</trd>
  <trdgrp lng="en">
    <trd>overturn</trd>
    <trd>upset</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>omgooien</trd>,
    <trd>ten <ind>val</ind> brengen</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_o;&c_p;&c_r;&c_o;&c_k;&c_i;&c_n;&c_u;&c_t;&c_mol;</trd>,
    <trd>&c_p;&c_je;&c_r;&c_je;&c_v;&c_je;&c_r;&c_n;&c_u;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="renver.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 14</lok></fnt>
  <snc mrk="renver.0ajxo.permuto">
    <dif>
      <klr>(de <ref cel="permut.0o.bijekcio">permuto</ref> <frm>&sigma;</frm>
      super <ref cel="ar.orda0o">orda aro</ref>)</klr>
      &Ccirc;iu tia duopo <frm>(<k>i</k>,<k>j</k>)</frm>, ke 
      <frm><k>i</k> &lt; <k>j</k></frm>, kaj 
      <frm>&sigma;(<k>i</k>) &gt; &sigma;(<k>j</k>)</frm>:
      <ekz>
        la permuto <frm><k>abc</k>&#8594;<k>bca</k></frm> enhavas unu 
        <tld/>a&jcirc;on, nome <frm>(<k>b</k>,<k>c</k>)</frm>.
      </ekz>
    </dif>
    <rim>
      Eblas diri anka&ubreve;, ke temas pri la duopo 
      <frm>(&sigma;(<k>i</k>),&sigma;(<k>j</k>))</frm>,
      kiel faras Bricard.
    </rim>
    <trd lng="be">&c_b;&c_je;&c_s;&c_p;&c_a;&c_r;&c_a;&c_d;&c_a;&c_k;</trd>
    <trdgrp lng="de">
      <trd>Inversion</trd>,
      <trd>Derangement</trd>
    </trdgrp>
    <trd lng="en">inversion<klr tip="ind"> (in a permutation)</klr></trd>
    <trdgrp lng="fr">
      <trd>inversion<klr tip="ind"> (dans une permutation)</klr></trd>,
      <trd>d&eacute;rangement<klr tip="ind"> (dans une permutation)</klr></trd>
    </trdgrp>
    <trd lng="ru">&c_b;&c_je;&c_s;&c_p;&c_o;&c_r;&c_ja;&c_d;&c_o;&c_k;</trd>
  </snc>
</drv>

</art>
