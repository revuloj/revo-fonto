<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>nekromanci</rad>/o <fnt><bib>SPV</bib></fnt>
</kap>
<drv mrk="nekromanci.0o">
  <kap><tld/>o</kap>
  <snc mrk="nekromanci.0o.DIV">
    <dif>
      Fantoma&ubreve;gurado, 
      aperigo kaj pridemandado de spiritoj por sortodiveno:
      <ekz>
        <tld/>o estis vaste praktikita de Babilonanoj, Egiptanoj, grekoj
        <fnt>
          <aut>E. Pauli</aut>,
          <vrk><url ref="http://www.cfh.ufsc.br/~simpozio/">
          Enciklopedio simpozio</url></vrk>,
          <lok>artikolo &leftquot;demono&rightquot;, 1999-03</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="ca">nigrom&agrave;ncia</trd>
  <trd lng="fr">n&eacute;cromancie</trd>
  <trd lng="hu">halottid&eacute;z&eacute;s</trd>
  <trdgrp lng="nl">
    <trd>necromantie</trd>,
    <trd>dodenbezwering</trd>
  </trdgrp>
</drv>

<drv mrk="nekromanci.0isto">
  <kap><tld/>isto</kap>
  <snc mrk="nekromanci.0isto.DIV">
    <dif>
      <ref tip="super" cel="auxgur.0isto.DIV">A&ubreve;guristo</ref> kiu 
      aperigas kaj pridemandas spiritojn de mortintoj:
      <ekz>
        malbonintencaj kritikantoj priskribas la seancojn, kiel 
        kunsidojn de <tld/>istoj a&ubreve; sor&ccirc;istoj
        <fnt>
          <aut>A. Kardec, trad. A. K. Afondo Costa, trad. B.
          Silva</aut>,
          <vrk><url ref="http://www.febnet.org.br/file/919.pdf">
          La &Ccirc;ielo kaj la Infero</url></vrk>,
          <lok>Brazila Spiritisma Federacio, 1979</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="ca">
    <trd>nigrom&agrave;ntic</trd>,
    <trd>nigromant</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>n&eacute;cromancien</trd>,
    <trd>n&eacute;cromant</trd>
  </trdgrp>
  <trdgrp lng="hu">
  <trd>halottid&eacute;z&odblac;</trd>,
  <trd>szellemid&eacute;z&odblac;</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>dodenbezweerder</trd>,
    <trd>necromant</trd>
  </trdgrp>
</drv>
</art>

