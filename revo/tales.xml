<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>Tales</rad>/o
</kap>
<drv mrk="tales.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">PERS</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      Greklingve: 
      <trd lng="grc">&Theta;&alfa;&lambda;&eta_circ;&sigma_fina;</trd>.
      Greka filozofo kaj matematikisto, 5-a jc a.K.
    </dif>
  </snc>
  <trd lng="fr">Thal&egrave;s</trd>
</drv>
<drv mrk="tales.t0a">
  <kap><tld lit="t"/>a</kap>
  <snc>
    <dif>
      Iel rilatanta al la verko de <tld/>o:
      <ekz>
        <uzo tip="fak">MAT</uzo>
        <ind><tld lit="t"/>a teoremo</ind>
        <klr>(vd <ref cel="homote.0a.figuroj">homotetia</ref> figuro)</klr>;
        <trd lng="fr">th&eacute;or&egrave;me de Thal&egrave;s</trd>
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">de <ind>Thal&egrave;s</ind></trd>
</drv>
</art>

