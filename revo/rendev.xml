    <pr>&#x304B;&#x3044;&#x3054;&#x3046;&#x306E;&#x3084;&#x304F;&#x305D;&#x304F;</pr></trd>,
    <trd>&#x30C7;&#x30FC;&#x30C8;  <pr>&#x3067;&#x30FC;&#x3068;</pr></trd>,
    <trd>&#x30E9;&#x30F3;&#x30C7;&#x30D6;&#x30FC;</trd>,
    <trd>&#x96C6;&#x5408;  <pr>&#x3057;&#x3085;&#x3046;&#x3054;&#x3046;</pr></trd>,
    <trd>&#x96C6;&#x7D50;  <pr>&#x3057;&#x3085;&#x3046;&#x3051;&#x3064;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>afspraak</trd>,
    <trd>rendez-vous</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>randka</trd>,
    <trd>schadzka</trd>,
    <trd>spotkanie</trd>
  </trdgrp>
  <trdgrp lng="pt">
