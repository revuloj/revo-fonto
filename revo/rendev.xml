    <trd>entrevista</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_s;&c_v;&c_i;&c_d;&c_a;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_r;&c_a;&c_n;&c_d;&c_je;&c_v;&c_u;</trd>
  </trdgrp>
  <trd lng="sk">&lcaron;&uacute;bostn&aacute; sch&ocirc;dzka</trd>
