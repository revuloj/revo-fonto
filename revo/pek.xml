<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>pek</rad>/i
</kap>
<drv mrk="pek.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Malobservi religian a&ubreve; moralan le&gcirc;on:
      <ekz><tld/>into pentas, kolero silentas
<fnt><bib>PrV</bib></fnt>;</ekz>
      <ekz>
        kontra&ubreve; <tld/>on prediku, sed <tld/>inton
pardonu<fnt>Z</fnt>;
      </ekz>
      <ekz>e&ccirc; inter piuloj ne mankas <tld/>uloj
<fnt><bib>PrV</bib></fnt></ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="kulp">kulpi</ref>,
      <ref cel="krim.0i">krimi</ref>.
    </refgrp>
    <trd lng="de">s&uuml;ndigen</trd>
  </snc>
  <snc>
    <dif>
      Malobservi regulon de dececo, scienco, arto kc:
      <ekz>
        <tld/>i kontra&ubreve; la logiko<fnt>Z</fnt>,
      </ekz>
      <ekz>
        la gramatiko, la vereco;
      </ekz>
      <ekz>
        tiuj formoj <tld/>as kontra&ubreve; la principo de
internacieco.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="erar.0i">erari</ref>,
      <ref cel="ruin.0igi">ruinigi</ref>,
      <ref cel="korekt.mal0a">malkorekta</ref>.
    </refgrp>
    <trd lng="de">versto&szlig;en</trd>
  </snc>
  <trd lng="en">sin</trd>
  <trd lng="fr">p&eacute;cher</trd>
  <trd lng="nl">zondigen</trd>
  <trd
lng="ru">&c_g;&c_r;&c_je;&c_sh;&c_i;&c_t;&c_mol;</trd>
  <trd lng="sv">synda</trd>
</drv>

<drv mrk="pek.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Malobservo pri religia a&ubreve; morala le&gcirc;o:
      <ekz>de <tld/>o kaj mizero estas plena la tero
<fnt><bib>PrV</bib></fnt>;</ekz>
      <ekz>
        pro <tld/>o senkonscia estas puno nenia<fnt>Z</fnt>;
      </ekz>
      <ekz><tld/>e akirita ne estas profita
<fnt><bib>PrV</bib></fnt>;</ekz>
      <ekz><tld/>o malnova perdas <tld/>econ
<fnt><bib>PrV</bib></fnt>.</ekz>
    </dif>
    <trd lng="de">S&uuml;nde</trd>
  </snc>
  <snc>
    <dif>
      Malobservo pri ia regulo:
      <ekz>
        tia uzado ne estas <tld/>o kontra&ubreve; la reguloj de la
        lingvo<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="de">Versto&szlig;</trd>
  </snc>
  <trd lng="cs">h&rcaron;&iacute;ch</trd>
  <trd lng="fr">p&eacute;ch&eacute;</trd>
  <trd lng="nl">zonde</trd>
  <trdgrp lng="ru">
    <trd>&c_g;&c_r;&c_je;&c_h;</trd>,
   
<trd>&c_p;&c_r;&c_je;&c_g;&c_r;&c_je;&c_sh;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
  <trd lng="sv"><klr>(en)</klr>
<ind>synd</ind></trd>
</drv>

<drv mrk="pek.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <dif>
      Instigi iun al <tld/>o.
    </dif>
    <refgrp tip="sin">
      <ref cel="log.de0ifor0i">delogi</ref>,
      <ref cel="virt">malvirtigi</ref>.
    </refgrp>
  </snc>
  <trd
lng="ru">&c_s;&c_o;&c_v;&c_r;&c_a;&c_t;&c_i;&c_t;&c_mol;</trd>
</drv>

<drv mrk="pek.sen0a">
  <kap>sen<tld/>a</kap>
  <snc>
    <dif>
      Neniel <tld/>inta.
    </dif>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Tute sendifekta, tute korekta, tute konvena, perfekta:
      <ekz>
        sen<tld/>a &gcirc;entileco, elokventeco.
      </ekz>
    </dif>
  </snc>
  <trd lng="nl">onbevlekt</trd>
  <trd
lng="ru">&c_b;&c_je;&c_z;&c_g;&c_r;&c_je;&c_sh;&c_n;&c_y;&c_j;</trd>
</drv>

<drv mrk="pek.sen0igi0liberigi">
  <kap>sen<tld/>igi, <tld/>liberigi</kap>
  <snc>
    <dif>
      Pardoni la <tld/>ojn, absolvi:
      <ekz>
        neniam tiu krimo <tld/>liberi&gcirc;os;
      </ekz>
      <ekz>
        vir&scirc;afo de <tld/>liberigado<fnt>Z</fnt>
        <klr>(pro<tld/>a kapro. <ref tip="sin"
        cel="kapr.0o">kapro</ref>)</klr>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">absoudre</trd>
  <trdgrp lng="nl">
    <trd>vergeven</trd>,
    <trd>van <ind>zonden</ind> ontslaan</trd>
  </trdgrp>
  <trd
lng="ru">&c_o;&c_t;&c_p;&c_u;&c_s;&c_t;&c_i;&c_t;&c_mol;
&c_g;&c_r;&c_je;&c_h;&c_i;</trd>
</drv>
</art>
