<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>2</ofc>
<rad>tangent</rad>/o
</kap>
<drv mrk="tangen.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 20</lok></fnt>
  <snc mrk="tangen.0o.entriangulo">
    <dif>
      <klr>(de <ref cel="angul.0o.MAT">angulo</ref> &alfa;)</klr>
      Kvociento de &gcirc;ia
      <ref cel="sinus.0o">sinuso</ref> per &gcirc;ia 
      <ref cel="kosinu.0o">kosinuso</ref>; simb. tg&#xa0;&alfa;, 
      tang&#xa0;&alfa; a&ubreve; tan&#xa0;&alfa; :
      <ekz>
        la <tld/>o de orto estas nefinia;
      </ekz>
      <ekz>
        la <tld/>o de angulo egalas al la negativo de la <tld/>o de &gcirc;ia
        <ref cel="suplem.0o.angulo">suplemento</ref>;
      </ekz>
      <ekz>
        la <tld/>o de akuta angulo en orta triangulo egalas al la
        kvociento de amba&ubreve; <ref cel="katet.0o">katetoj</ref>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      Ne konfuzu kun:
      <ref cel="tangx.0anto">tan&gcirc;anto</ref>.
    </refgrp>
    <bld lok="../bld/trigo.jpg">
      la <tld/>o de angulo &alfa; egalas al AT/OM
    </bld>    
  </snc>
  <snc mrk="tangen.0o.funkcio">
    <dif>
      Reela <ref tip="super" cel="funkci.0o.MAT">funkcio</ref>, kiu &jcirc;etas
      reelon x al la <tld/>o <sncref ref="tangen.0o.entriangulo"/>
      de angulo, kies mezuro en <ref cel="radian.0o">radianoj</ref> diferencas
      de x per oblo de &pi;; simb. tg a&ubreve; tan:
      <ekz>
        <tld/>o estas perioda funkcio, kun periodo &pi;;
      </ekz>
      <ekz>
        <tld/>o strebas al nefinio, kiam la argumento strebas al &pi;/2.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Tangens</trd>
  <trd lng="en">tangent</trd>
  <trd lng="fr">tangente<klr tip="ind"> (trigo.)</klr></trd>
  <trd lng="nl">tangens</trd>
  <trd lng="ru">&c_t;&c_a;&c_n;&c_g;&c_je;&c_n;&c_s;</trd>
</drv>
<drv mrk="tangen.ark0o">
  <kap>ark<tld/>o, arko<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc>
    <dif>
      <ref cel="bild.inversa0igo">Inversa bildigo</ref> de
      la <ref cel="vast.mal0igajxo.bildigo">malvastiga&jcirc;o</ref> de
      <ref tip="super" cel="funkci.0o.MAT">funkcio</ref> <tld/>o al la
      intervalo ]-&pi;/2,&pi;/2[; simb. arc tg, arc tan a&ubreve; ark tang:
      <ekz>
        ark<tld/>o de 1 egalas al &pi;/4.
      </ekz>
    </dif>
    <rim>
      Vd rimarkon sub <ref cel="ark.0o.angulo">arko</ref>.
    </rim>
  </snc>
  <trd lng="de">Arkustangens</trd>
  <trd lng="en">arc tangent</trd>
  <trd lng="fr">arc tangente</trd>
  <trd lng="ru">&c_a;&c_r;&c_k;&c_t;&c_a;&c_n;&c_g;&c_je;&c_n;&c_s;</trd>
</drv></art>
