<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: polemi.xml,v 1.24 2024/02/17 07:52:34 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>polemik</rad>/o
</kap>
<drv mrk="polemi.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Publika <ref tip="super" cel="disput.0o.polemiko">disputo</ref>, 
      plej ofte skriba, en kiu akre oponi&gcirc;as kontra&ubreve;aj opinioj:
      <ekz>
        bonege skribita kritika <tld/>o
        <fnt>
          <bib>FK</bib>
          <lok>Fundamenta Krestomatio de la lingvo Esperanto</lok>
        </fnt>;
      </ekz>
      <ekz>
        por nia afero &ccirc;ia <tld/>o, en kiun mi estus enmiksita, estus tre dan&gcirc;era
        <fnt>
          <bib>LR</bib>
          <lok>Dua Parto &ndash; Gramatiko</lok>
        </fnt>;
      </ekz>
      <ekz>
        la redakcio decidis akcepti lingvajn artikolojn, venantajn nur de mi,
        <klr>[&#x2026;]</klr> kredeble por eviti <tld/>on kaj disputojn
        <fnt>
          <bib>LR</bib>
          <lok>Tria Parto &ndash; Jurisprudenco</lok>
        </fnt>;
      </ekz>
      <ekz>
        tiam okazis tre vigla <tld/>o en la pariza gazetaro inter du kontra&ubreve;aj emoj
        <fnt>
          <bib>FSp</bib>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>oj inter protestantaj kaj katolikaj &scirc;tatoj
        <fnt>
          <bib>FSp</bib>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="sub" cel="pamfle.0o">pamfleto</ref>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_l;&c_je;&c_m;&c_ib;&c_k;&c_a;</trd>
  <trdgrp lng="cs">
    <trd>debata</trd>,
    <trd>polemika</trd>
  </trdgrp>
  <trd lng="de">Polemik</trd>
  <trdgrp lng="en">
    <trd>polemic</trd>,
    <trd>controversy</trd>,
    <trd>dispute</trd>
  </trdgrp>
  <trd lng="es">pol&eacute;mica</trd>
  <trd lng="fr">pol&eacute;mique</trd>
  <trdgrp lng="hu">
    <trd>nyilv&aacute;nos <ind>vita</ind></trd>,
    <trd>pol&eacute;mia</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x8AD6;&#x4E89;  <pr>&#x308D;&#x3093;&#x305D;&#x3046;</pr></trd>,
    <trd>&#x8AD6;&#x6226;  <pr>&#x308D;&#x3093;&#x305B;&#x3093;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>polemiek</trd>,
    <trd>pennenstrijd</trd>
  </trdgrp>
  <trd lng="oc">polemica</trd>
  <trd lng="pl">polemika</trd>
  <trd lng="pt">pol&ecirc;mica</trd>
  <trd lng="ru">&c_p;&c_o;&c_l;&c_je;&c_m;&c_i;&c_k;&c_a;</trd>
  <trdgrp lng="sk">
    <trd>debata</trd>,
    <trd>polemika</trd>
  </trdgrp>
  <trd lng="uk">&c_p;&c_o;&c_l;&c_je;&c_m;&c_ib;&c_k;&c_a;</trd>
</drv>

<drv mrk="polemi.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Skribe publike <ref tip="super" cel="diskut.0i">diskuti</ref>:
      <ekz>
        konstante kaj malprave li <tld/>is kontra&ubreve; <nom>Kierkegaard</nom>
        <fnt>
          <bib>LOdE</bib>
          <lok>1999,  No 8-9 (58-59)</lok>
        </fnt>;
      </ekz>
      <ekz>
        en Esperantio tro ofte oni <tld/>as kaj batalas unu kontra&ubreve; la alia, kvaza&ubreve;
        temus pri dialektika ekzerco
        <fnt>
          <bib>LOdE</bib>
          <lok>1999,  No 10 (60)</lok>
        </fnt>;
      </ekz>
      <ekz>
        tipaj por la postmoderna epoko estas intelektuloj, kiuj preferas <tld/>i
        anstata&ubreve; dialogi
        <fnt>
          <bib>LOdE</bib>
          <lok>2000,  No 5 (67)</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="disput.0i">disputi</ref>,
      <ref cel="debat.0i">debati</ref>
    </refgrp>   
  </snc>
  <trd lng="be">&c_p;&c_a;&c_l;&c_je;&c_m;&c_ib;&c_z;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trd lng="de">polemisieren</trd>
  <trd lng="en">engage in controversy</trd>
  <trd lng="es">polemizar</trd>
  <trd lng="fr">pol&eacute;miquer</trd>
  <trdgrp lng="hu">
    <trd>vit&aacute;zik</trd>,
    <trd>polemiz&aacute;l</trd>
  </trdgrp>  
  <trd lng="ja">&#x8AD6;&#x4E89;&#x3059;&#x308B;  <pr>&#x308D;&#x3093;&#x305D;&#x3046;&#x3059;&#x308B;</pr></trd>
  <trd lng="nl">polemiseren</trd>
  <trd lng="pl">polemizowa&cacute;</trd>
  <trd lng="ru">&c_p;&c_o;&c_l;&c_je;&c_m;&c_i;&c_z;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trd lng="sk">polemizova&tcaron;</trd>
  <trd lng="cs">polemizovat</trd>
  <trd lng="uk">&#x43F;&#x43E;&#x43B;&#x435;&#x43C;&#x456;&#x437;&#x443;&#x432;&#x430;&#x442;&#x438;</trd>
  <trdgrp lng="zh">
    <trd>&#x4F5C;&#x7B14;&#x6218; <pr>zu&#xF2;b&#x1D0;zh&#xE0;n</pr></trd>,
    <trd>&#x4F5C;&#x7B46;&#x6230; <pr>zu&#xF2;b&#x1D0;zh&#xE0;n</pr></trd>
  </trdgrp>
</drv>
</art>
