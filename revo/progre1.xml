<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>progresi</rad>/o
  <fnt>Z</fnt>
</kap>
<drv mrk="progre1.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><aut>&B;</aut><vrk>Vortaro de Esperanto</vrk></fnt>
  <snc>
    <dif>
      Tia <ref tip="super" cel="vic.0o.MAT">vico</ref> da nombroj, ke &ccirc;iu 
      el ili esprimi&gcirc;as kiel <ctl>simpla</ctl> funkcio de la 
      anta&ubreve;aj.
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Progression</trd>,
    <trd>Zahlenfolge</trd>,
    <trd>Reihe</trd>
  </trdgrp>
  <trd lng="en">progression</trd>
  <trd lng="fr">progression<klr tip="ind"> (math., suite)</klr></trd>
  <trd lng="nl">reeks<klr tip="ind"> (wisk.)</klr></trd>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_g;&c_r;&c_je;&c_s;&c_s;&c_i;&c_ja;</trd>
</drv>

<drv mrk="progre1.aritmetika0o">
  <kap>aritmetika <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      Tia <ref tip="super" cel="progre1.0o">progresio</ref>, ke
      &ccirc;iu &gcirc;ia termo, esceptante la unuan, estas la
      aritmetika <ref cel="nombr.mez0o">meznombro</ref> de la anta&ubreve;a
      kaj de la posta:
      <ekz>
        1, 3, 5, 7, 9, 11...;
      </ekz>
      <ekz>
        la n-a termo de tia <tld/>o egalas al la sumo de konstanto 
        <klr>(la <ref cel="difere.0o.progresio">diferenco</ref> de la 
        <tld/>o)</klr> kun la anta&ubreve;a termo.
      </ekz>
    </dif>
    <ref tip="sin" cel="vic.aritmetika0o">aritmetika vico.</ref>
  </snc>
  <trd lng="de">arithmetische <ind>Progression</ind></trd>
  <trd lng="en">arithmetic <ind>progression</ind></trd>
  <trd lng="fr">progression arithm&eacute;tique</trd>
  <trd lng="ru">&c_a;&c_r;&c_i;&c_f;&c_m;&c_je;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_a;&c_ja; <ind>&c_p;&c_r;&c_o;&c_g;&c_r;&c_je;&c_s;&c_s;&c_i;&c_ja;</ind></trd>
</drv>

<drv mrk="progre1.geometria0o">
  <kap>geometria <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      Tia <ref tip="super" cel="progre1.0o">progresio</ref>, ke
      &ccirc;iu &gcirc;ia termo, esceptante la unuan, estas la
      geometria <ref cel="nombr.mez0o">meznombro</ref> de la anta&ubreve;a
      kaj de la posta: 
      <ekz>
        1, 2, 4, 8, 16, 32...;
      </ekz>
      <ekz>
        la n-a termo de tia <tld/>o egalas al la produto de konstanto 
        <klr>(la <ref cel="kvocie.0o.progresio">kvociento</ref> de la 
        <tld/>o)</klr> per la anta&ubreve;a termo.
      </ekz>
    </dif>
    <ref tip="sin" cel="vic.geometria0o">geometria vico.</ref>
  </snc>
  <trd lng="de">geometrische <ind>Progression</ind></trd>
  <trd lng="en">geometric <ind>progression</ind></trd>
  <trd lng="fr">progression g&eacute;om&eacute;trique</trd>
  <trd lng="ru">&c_g;&c_je;&c_o;&c_m;&c_je;&c_t;&c_r;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_a;&c_ja; <ind>&c_p;&c_r;&c_o;&c_g;&c_r;&c_je;&c_s;&c_s;&c_i;&c_ja;</ind></trd>
</drv>

<drv mrk="progre1.harmona0o">
  <kap>harmona <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      Tia <ref tip="super" cel="progre1.0o">progresio</ref>, ke
      &ccirc;iu &gcirc;ia termo, esceptante la unuan, estas la
      harmona <ref cel="nombr.mez0o">meznombro</ref> de la anta&ubreve;a
      kaj de la posta: 
      <ekz>
        1, 1/2, 1/3, 1/4, 1/5, 1/6...;
      </ekz>
      <ekz>
        la termoj de tia <tld/>o estas inversoj de la termoj de 
        iu aritmetika <tld/>o.
      </ekz>
    </dif>
    <ref tip="sin" cel="vic.harmona0o">harmona vico.</ref>
  </snc>
  <trd lng="de">harmonische <ind>Progression</ind></trd>
  <trd lng="en">harmonic <ind>progression</ind></trd>
  <trd lng="fr">progression harmonique</trd>
  <trd lng="ru">&c_g;&c_a;&c_r;&c_m;&c_o;&c_n;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_a;&c_ja; <ind>&c_p;&c_r;&c_o;&c_g;&c_r;&c_je;&c_s;&c_s;&c_i;&c_ja;</ind></trd>
</drv>
</art>
