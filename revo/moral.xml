<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>moral</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="moral.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Parto de la filozofio esploranta la principojn de homa konduto kaj
      instruanta pri la celinda bono kaj pri la devoj.
    </dif>
    <refgrp tip="sin">
      <ref cel="etik.0o">etiko</ref>.
    </refgrp>
    <trd lng="nl">zedenleer</trd>
  </snc>
  <snc>
    <dif>
      Tuto de la reguloj montrantaj al la homo liajn devojn en socia a&ubreve;
      privata konduto.
    </dif>
    <trd lng="nl">moraal</trd>
  </snc>
  <snc>
    <dif>
      Tuto de la kondutreguloj kaj moroj de iu aparta socio.
    </dif>
    <trd lng="nl">moraal</trd>
  </snc>
  <trdgrp lng="be">
    <trd>&c_m;&c_a;&c_r;&c_a;&c_l;&c_mol;</trd>,
    <trd>&c_m;&c_a;&c_r;&c_a;&c_l;&c_mol;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>&eacute;thique<klr> (subst.)</klr></trd>,
    <trd>morale<klr> (subst.)</klr></trd>
  </trdgrp>
  <trd lng="pt">moral</trd>
  <trdgrp lng="ru">
    <trd>&c_m;&c_o;&c_r;&c_a;&c_l;&c_mol;</trd>,
    <trd>&c_n;&c_r;&c_a;&c_v;&c_s;&c_t;&c_v;&c_je;&c_n;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="moral.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Koncernanta la <tld/>on:
      <ekz>
        <tld/>aj devoj;
      </ekz>
      <ekz>
        <tld/>a instruo.
      </ekz>
    </dif>
    <trdgrp lng="ru">
      <trd>&c_m;&c_o;&c_r;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
      <trd>&c_n;&c_r;&c_a;&c_v;&c_s;&c_t;&c_v;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
    </trdgrp>
  </snc>
  <snc>
    <dif>
      <tld lit="M"/>e bona, konforma al la devo kaj virto:
      <ekz>
        <ind>mal<tld/>a</ind> homo, ago;
        <trdgrp lng="ru">
          <trd>&c_a;&c_m;&c_o;&c_r;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
          <trd>&c_b;&c_je;&c_z;&c_n;&c_r;&c_a;&c_v;&c_s;&c_t;&c_v;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
        </trdgrp>
      </ekz>
      <ekz>
        <tld/>eco.
      </ekz>
    </dif>
    <trdgrp lng="ru">
      <trd>&c_m;&c_o;&c_r;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
      <trd>&c_n;&c_r;&c_a;&c_v;&c_s;&c_t;&c_v;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
    </trdgrp>
  </snc>
  <snc>
    <dif>
      Spirita, nekorpa, nemateria:
      <ekz>
        la <tld/>aj bezonoj de la homo;
      </ekz>
      <ekz>
        mezuri la <tld/>ajn meritojn de &ccirc;iu estas neeble<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la urbestraro donis al ni sian <tld/>an apogon<fnt>Z</fnt>;
      </ekz>
      <ekz>
        ili rigardis min kiel sian <tld/>an &ccirc;efon<fnt>Z</fnt>;
      </ekz>
      <ekz>
        havi de Esperanto nur <tld/>an profiton<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>e respondi pri io;
      </ekz>
      <ekz>
        <tld/>e tia konkurado estus peko kontra&ubreve; la internacilingva ideo,
        kaj praktike &gcirc;i kondukas al fiasko<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="ru">&c_m;&c_o;&c_r;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
  </snc>
  <trd lng="be">&c_m;&c_a;&c_r;&c_a;&c_l;&c_mol;&c_n;&c_y;</trd>
  <trdgrp lng="fr">
    <trd>&eacute;thique<klr> (adj.)</klr></trd>,
    <trd>morale<klr> (adj.)</klr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>moreel</trd>,
    <trd>zedelijk</trd>
  </trdgrp>
</drv>

<drv mrk="moral.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc>
    <dif>
      <tld lit="M"/>a instruo, konkludo:
      <ekz>
        la <tld/>a&jcirc;o de la fablo estas, ke...
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_m;&c_a;&c_r;&c_a;&c_l;&c_mol; <klr tip="amb">(&c_n;&c_a;&c_p;&c_r;., &c_b;&c_a;&c_j;&c_k;&c_ib;)</klr></trd>
  <trd lng="fr">morale<klr> (de l'histoire etc.)</klr></trd>
  <trdgrp lng="nl">
    <trd>moraal</trd>,
    <trd>strekking</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_m;&c_o;&c_r;&c_a;&c_l;&c_mol; <klr>(&c_b;&c_a;&c_s;&c_n;&c_i; &c_i; &c_t;.&c_p;.)</klr></trd>,
    <trd>&c_n;&c_r;&c_a;&c_v;&c_o;&c_u;&c_ch;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
</drv>

<drv mrk="moral.profesia0o">
  <kap>profesia <tld/>o</kap>
  <snc mrk="moral.profesia0o.FIL">
    <uzo tip="fak">FIL</uzo>
    <dif>
      Moralo pri la propraj cirkonstancoj kaj agoj de iuj profesianoj:
      <ekz>
        s-ro Hong SokHjon, neniom kalkulante sian profesian <tld/>on 
        kiel &jcirc;urnalisto, <klr>...</klr> helpis la kandidaton de 
        regpartio kontra&ubreve;le&gcirc;e 
        <fnt>
          <aut>Dekmil</aut>,
          <vrk><url ref="http://solidareco.cafe24.com/16.php">
          la solidareco</url></vrk>,
          <lok>2005-08</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">d&eacute;ontologie</trd>
</drv>

<drv mrk="moral.sen0igi">
  <kap>sen<tld/>igi</kap>
  <snc>
    <dif>
      Deturni iun de la devo kaj virto.
    </dif>
    <refgrp tip="vid">
      <ref cel="korupt.0i">korupti</ref>,
      <ref cel="log.de0ifor0i">forlogi</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_d;&c_e;&c_m;&c_a;&c_r;&c_a;&c_l;&c_ib;&c_z;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trd lng="fr">pervertir</trd>
  <trd lng="nl">zedeloos</trd>
  <trd lng="ru">&c_d;&c_je;&c_m;&c_o;&c_r;&c_a;&c_l;&c_i;&c_z;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
</drv>
</art>
