<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>2</ofc>
  <rad>imperativ</rad>/o
</kap>
<drv mrk="impera.0o">
  <kap><tld/>o</kap>
  <snc num="1">
    <dif>
      Gramatika modo per kiu multaj lingvoj esprimas la ordonon
      en sendependa propozicio (ekz.:
      <ekz>venu!</ekz>
      <ekz>ne faru tion!</ekz>);
      la <tld/>o traduki&gcirc;as en esp-o per la u-modo, kiu estas pli
      lar&gcirc;senca kaj esprimas &gcirc;enerale deziron a&ubreve; volon en sendependaj
      a&ubreve; dependaj propozicioj 
    </dif>
    <refgrp tip="sin">
      <ref cel="subjun.0o">subjunktivo</ref>,
      <ref cel="voliti">volitivo</ref>.
    </refgrp>
    <trdgrp lng="de">
      <trd>Imperativ</trd>,
      <trd>Befehlsform</trd>
    </trdgrp>
    <trd lng="en">imperative</trd>
    <trdgrp lng="nl">
      <trd>imperatief</trd>,
      <trd>gebiedende wijs</trd>
    </trdgrp>
    <trd lng="ru">&c_p;&c_o;&c_v;&c_je;&c_l;&c_i;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_o;&c_je; &c_n;&c_a;&c_k;&c_l;&c_o;&c_n;&c_je;&c_n;&c_i;&c_je;</trd>
  </snc>
  <snc num="2">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Ordona, nepra formulo de morala devo:
      <ekz>la <tld/>o de la konscienco.</ekz>
    </dif>
    <trd lng="de">Imperativ</trd>
    <trd lng="en">imperative</trd>
    <trd lng="nl">imperatief</trd>
    <trdgrp lng="ru">
      <trd>&c_i;&c_m;&c_p;&c_je;&c_r;&c_a;&c_t;&c_i;&c_v;</trd>,
      <trd>&c_v;&c_je;&c_l;&c_je;&c_n;&c_i;&c_je;</trd>
    </trdgrp>
  </snc>
</drv>
<drv mrk="impera.0a">
  <kap><tld/>a</kap>
  <snc num="1">
    <dif>
      Rilata al la gramatika <tld/>o: <ekz><tld/>a modo, formo.</ekz>
    </dif>
    <trd lng="en">imperative</trd>
  </snc>
  <snc num="2">
    <dif>
      Nepre trudanta, deviganta:
      <ekz><tld/>a ordono, devo;</ekz>
      <ekz><tld/>a mandato</ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="nepr.0a">nepra</ref>,
      <ref cel="absolu.0a">absoluta</ref>.
    </refgrp>
    <trd lng="en">imperative</trd>
  </snc>
  <trd lng="nl">gebiedend</trd>
    <trdgrp lng="ru">
      <trd>&c_i;&c_m;&c_p;&c_je;&c_r;&c_a;&c_t;&c_i;&c_v;&c_n;&c_y;&c_j;</trd>,
      <trd>&c_p;&c_o;&c_v;&c_je;&c_l;&c_i;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
    </trdgrp>
</drv>
</art>
