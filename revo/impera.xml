<art mrk="$Id: impera.xml,v 1.23 2022/03/21 15:27:48 revo Exp $">
<kap>
  <ofc>2</ofc>
  <rad>imperativ</rad>/o
</kap>
<drv mrk="impera.0o">
  <kap><tld/>o</kap>
  <snc>
    <uzo tip="fak">GRA</uzo>
    <dif>
      Gramatika modo, per kiu multaj lingvoj esprimas la ordonon
      en sendependa propozicio (ekz.:
      <ekz>
        venu!
      </ekz>
      ,
      <ekz>
        ne faru tion!
      </ekz>
      );
      la <tld/>o traduki&gcirc;as en Esperanto per la u-modo, kiu estas pli
      lar&gcirc;senca kaj esprimas &gcirc;enerale deziron a&ubreve; volon en 
      sendependaj a&ubreve; dependaj propozicioj.
    </dif>
    <refgrp tip="vid">
      <ref cel="subjun.0o">subjunktivo</ref>,
      <ref cel="voliti">volitivo</ref>.
    </refgrp>
    <trd lng="be">&c_z;&c_a;&c_g;&c_a;&c_d;&c_n;&c_y; &c_l;&c_a;&c_d;</trd>
    <trdgrp lng="de">
      <trd>Imperativ</trd>,
      <trd>Befehlsform</trd>
    </trdgrp>
    <trd lng="en">imperative</trd>
    <trd lng="es">imperativo</trd>
    <trd lng="fa">&a_w;&a_j;&a_h; &a_A;&a_m;&a_r;&f_y;</trd>
    <trdgrp lng="hu">
      <trd>felsz&oacute;l&iacute;t&oacute; m&oacute;d</trd>,
      <trd>imperativus</trd>
    </trdgrp>
    <trdgrp lng="nl">
      <trd>imperatief</trd>,
      <trd>gebiedende <ind>wijs</ind></trd>
    </trdgrp>
    <trd lng="pt">imperativo<klr tip="amb"> (gram&aacute;tica)</klr></trd>
    <trd lng="ru">&c_p;&c_o;&c_v;&c_je;&c_l;&c_i;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_o;&c_je; &c_n;&c_a;&c_k;&c_l;&c_o;&c_n;&c_je;&c_n;&c_i;&c_je;</trd>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Ordona, nepra formulo de morala devo:
      <ekz>
        la <tld/>o de la konscienco.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_ib;&c_m;&c_p;&c_e;&c_r;&c_a;&c_t;&c_y;&c_w;</trd>,
      <trd>&c_z;&c_a;&c_g;&c_a;&c_d;</trd>
    </trdgrp>
    <trd lng="de">Imperativ</trd>
    <trd lng="en">imperative</trd>
    <trd lng="fa">&a_D;&a_r;&a_w;&a_r;&a_t;</trd>
    <trd lng="hu">bels&odblac; erk&ouml;lcsi <ind>parancs</ind></trd>
    <trd lng="nl">imperatief</trd>
    <trd lng="pt">imperativo<klr tip="ind"> (subst.)</klr></trd>
    <trdgrp lng="ru">
      <trd>&c_i;&c_m;&c_p;&c_je;&c_r;&c_a;&c_t;&c_i;&c_v;</trd>,
      <trd>&c_v;&c_je;&c_l;&c_je;&c_n;&c_i;&c_je;</trd>
    </trdgrp>
  </snc>
  <trd lng="ca">imperatiu<klr> (subst.)</klr></trd>
  <trdgrp lng="cs">
    <trd>imperativ</trd>,
    <trd>rozkazovac&#xED; zp&#x16F;sob</trd>
  </trdgrp>
  <trd lng="fr">imp&eacute;ratif<klr tip="ind"> (subst.)</klr></trd>
  <trdgrp lng="sk">
    <trd>imperat&#xED;v</trd>,
    <trd>rozkazovac&#xED; sp&#xF4;sob</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x43D;&#x430;&#x43A;&#x430;&#x437;&#x43E;&#x432;&#x438;&#x439; &#x441;&#x43F;&#x43E;&#x441;&#x456;&#x431;</trd>,
    <trd>&#x456;&#x43C;&#x43F;&#x435;&#x440;&#x430;&#x442;&#x438;&#x432;</trd>
  </trdgrp>
</drv>

<drv mrk="impera.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Rilata al la gramatika <tld/>o:
      <ekz>
        <tld/>a modo, formo.
      </ekz>
    </dif>
    <trd lng="en">imperative</trd>
    <trd lng="fa">&a_A;&a_m;&a_r;&f_y;</trd>
  </snc>
  <snc>
    <dif>
      Nepre trudanta, deviganta:
      <ekz>
        <tld/>a ordono, devo;
      </ekz>
      <ekz>
        <tld/>a mandato.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="nepr.0a">nepra</ref>,
      <ref cel="absolu.0a">absoluta</ref>.
    </refgrp>
    <trd lng="en">imperative</trd>
    <trdgrp lng="fa">
      <trd>&a_n;&a_A;&f_g;&a_z;&f_y;&a_r;</trd>,
      <trd>&a_A;&a_j;&a_b;&a_A;&a_r;&f_y;</trd>,
      <trd>&a_l;&a_A;&a_z;&a_m;&zwnj;&a_A;&a_l;&a_A;&a_j;&a_r;&a_A;</trd>
    </trdgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_ib;&c_m;&c_p;&c_e;&c_r;&c_a;&c_t;&c_y;&c_w;&c_n;&c_y;</trd>,
    <trd>&c_z;&c_a;&c_g;&c_a;&c_d;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="ca">imperatiu<klr> (adj.)</klr></trd>
  <trdgrp lng="cs">
    <trd>imperativn&#xED;</trd>,
    <trd>rozkazovac&#xED;</trd>
  </trdgrp>
  <trd lng="de">imperativ</trd>
  <trd lng="fr">imp&eacute;ratif<klr tip="ind"> (adj.)</klr></trd>
  <trd lng="nl">gebiedend</trd>
  <trd lng="pt">imperativo<klr tip="ind"> (adj.)</klr></trd>
  <trdgrp lng="ru">
    <trd>&c_i;&c_m;&c_p;&c_je;&c_r;&c_a;&c_t;&c_i;&c_v;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_p;&c_o;&c_v;&c_je;&c_l;&c_i;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trd lng="sk">rozkazovac&#xED;</trd>
  <trdgrp lng="uk">
    <trd>&#x43D;&#x430;&#x43A;&#x430;&#x437;&#x43E;&#x432;&#x438;&#x439;</trd>,
    <trd>&#x456;&#x43C;&#x43F;&#x435;&#x440;&#x430;&#x442;&#x438;&#x432;&#x43D;&#x438;&#x439;</trd>
  </trdgrp>
</drv>
</art>
