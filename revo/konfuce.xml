<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: konfuce.xml,v 1.23 2023/12/03 09:58:55 revo Exp $">
  <kap>
    <rad>Konfuce</rad>/o <fnt><bib>PIV1</bib></fnt>
  </kap>
<drv mrk="konfuce.0o">
  <kap><tld/>o</kap>
  <snc mrk="konfuce.0o.PERS">
    <uzo tip="fak">PERS</uzo>
    <dif>
      Antikva &ccirc;ina <ref tip="lst" lst="voko:historiaj_personoj" cel="filozo.0o.scienculo">filozofo</ref>
      (proks. 551&#x202F;a.K.&#x202F;&ndash;&#x202F;479&#x202F;a.K.), fondinto de <tld lit="k"/>anismo, 
      &ccirc;inlingve <nom>Kong-Fu-ce</nom> (<nom>Kong</nom> la Majstro):
      <ekz>
        <tld/>o vidas klare la eminentan signifon de la lingvo kaj postulas aplikon de
        preciza lingva&jcirc;o
        <fnt>
          <bib>Monato</bib>
          <aut>Jomo Ipfelkofer</aut>
          <vrk><url ref="&Monato;/2013/010677.php">Lingva konfuzo kaj Konfuceo</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        la &ccirc;inlingva Analektoj de <tld/>o
        <fnt>
          <bib>Monato</bib>
          <aut>Donald Broadribb</aut>
          <vrk><url ref="&Monato;/2012/010408.php">Mallongaj anekdotoj pri Konfuceo</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>a Instituto
        <fnt>
          <bib>Monato</bib>
          <aut>Julius Hauser</aut>
          <vrk><url ref="&Monato;/2012/010678.php">Bratislavo, urbo kun (&ccirc;ina) klaso</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_K;&c_a;&c_n;&c_f;&c_u;&c_c;&c_y;&c_j;</trd>
  <trd lng="bg">&c_K;&c_o;&c_n;&c_f;&c_u;&c_c;&c_i;&c_j;</trd>
  <trd lng="cs">Konfucius</trd>
  <trd lng="de">Konfuzius</trd>
  <trd lng="en">Confucius</trd>
  <trd lng="es">Confucio</trd>
  <trd lng="fa">&f_k;&a_n;&a_f;&a_w;&a_s;&f_y;&a_w;&a_s;</trd>
  <trd lng="fr">confucius</trd>
  <trdgrp lng="hu">
    <trd>Konfuciusz</trd>,
    <trd>Kung Fu-ce</trd></trdgrp>
  <trd lng="it">Confucio</trd>
  <trd lng="ja">&#x5B54;&#x5B50;  <pr>&#x3053;&#x3046;&#x3057;</pr></trd>
  <trd lng="nl">Confucius</trd>
  <trd lng="pl">Konfucjusz</trd>
  <trd lng="pt">Conf&uacute;cio</trd>
  <trdgrp lng="ru">
    <trd>&c_K;&c_o;&c_n;&c_f;&c_u;&c_c;&c_i;&c_j;</trd>,
    <trd>&c_K;&c_u;&c_n;-&c_c;&c_z;&c_y;</trd>
  </trdgrp>
  <trd lng="sk">Konfucius</trd>
  <trdgrp lng="zh">
    <trd>&#x5B54;&#x592B;&#x5B50; <klr>[K&#x1D2;ngf&#x16B;z&#x1D0;]</klr></trd>
    <trd>&#x5B54;&#x5B50; <klr>[K&#x1D2;ngz&#x1D0;]</klr></trd>
  </trdgrp>
</drv>

<drv mrk="konfuce.0ano">
  <kap><tld lit="k"/>ano</kap>
  <snc mrk="konfuce.0ano.FIL">
    <dif>
      Kredanto je <tld lit="k"/>anismo:
      <ekz>
        <nom>Ouyang Xiu</nom> <klr>[&#x2026;]</klr> estis <tld lit="k"/>ano, kortegano, verkisto de la
        Norda <nom>Song</nom>-dinastio
        <fnt>
          <vrk><url ref="http://www.espero.com.cn/2015-09/28/content_36700117.htm">La&ubreve; melodio Printempo en Jada Pavilono - espero.com.cn</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Konfuzianer</trd>,
  </trdgrp>
  <trd lng="be">&c_k;&c_a;&c_n;&c_f;&c_u;&c_c;&c_y;&c_ja;&c_n;&c_je;&c_c;</trd>
  <trd lng="de">Konfuzianer</trd>
  <trd lng="en">Confucian</trd>
  <trd lng="fr">confucianiste<klr> (subst.)</klr></trd>
  <trd lng="hu">konfuci&aacute;nus</trd>
  <trd lng="it">confuciano</trd>
  <trd lng="nl">confucianist</trd>
  <trd lng="pl">konfucjanista</trd>
  <trd lng="ru">&c_k;&c_o;&c_n;&c_f;&c_u;&c_c;&c_i;&c_a;&c_n;&c_je;&c_c;</trd>
  <trd lng="sk">konfuci&aacute;n</trd>
  <trdgrp lng="zh">
    <trd>&#x5112; <pr>r&#xFA;</pr></trd>,
    <trd>&#x5112;&#x8005; <pr>R&#xFA;zh&#x11B;</pr></trd>,
    <trd>&#x5112;&#x751F; <pr>r&#xFA;sh&#x113;ng</pr></trd>
  </trdgrp>
</drv>

<drv mrk="konfuce.0anismo">
  <kap><tld lit="k"/>anismo, <var><kap><tld lit="K"/>ismo</kap></var></kap>
  <snc mrk="konfuce.0anismo.FIL">
    <uzo tip="fak">FIL</uzo>
    <uzo tip="fak">REL</uzo>
    <dif>
      &Ccirc;indevena socia, morala kaj religia <ref tip="super" cel="doktri.0o">doktrino</ref>, influa dum pli ol 
      du jarmiloj en Orientazio, la&ubreve; kiu la potenco de regnestro estas 
      sankta, kaj la bazo de socio estas respekto al superuloj, morala 
      perfekti&gcirc;o kaj obeado al normoj de etiketo:
      <ekz>
        en &Ccirc;inio kunvivis tri religioj: <tld/>ismo, taoismo kaj budaismo
        <fnt>
          <aut>V. Rogov</aut>,
          <vrk><url ref="http://www.internacia-gazeto.com/articoli-2007/art_07_034_vladimir_Budho.htm">
          Komento pri La korpo de Budho</url></vrk>,
          <lok>Internacia gazeto, 2007-03-21</lok>
        </fnt>;
      </ekz>
      <ekz>
        anstata&ubreve; konstrui pre&gcirc;ejon, li sekvis ekzemplojn de <tld lit="k"/>ismaj
        kleruloj, kiuj kolektis a&ubreve;skultantojn al siaj regulaj prelegoj
        <fnt>
          <bib>Monato</bib>
          <aut>Kimura Goro Christoph</aut>
          <vrk><url ref="&Monato;/2011/010304.php">Utimura Kanzo anta&ubreve; 150 jaroj naski&gcirc;is</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_n;&c_f;&c_u;&c_c;&c_y;&c_ja;&c_n;&c_s;&c_t;&c_v;&c_a;</trd>
  <trd lng="bg">&c_K;&c_o;&c_n;&c_f;&c_u;&c_c;&c_i;&c_a;&c_n;&c_s;&c_t;&c_v;&c_o;</trd>
  <trd lng="de">Konfuzianismus</trd>
  <trd lng="en">Confucianism</trd>
  <trd lng="es">Confucianismo</trd>
  <trd lng="fa">&f_k;&a_n;&a_f;&a_w;&a_s;&f_y;&a_A;&a_n;&f_y;&a_s;&a_m;</trd>
  <trd lng="fr">confucianisme</trd>
  <trd lng="hu">konfucianizmus</trd>
  <trd lng="nl">confucianisme</trd>
  <trd lng="pl">konfucjanizm</trd>
  <trd lng="pt">confucionismo</trd>
  <trd lng="ru">&c_k;&c_o;&c_n;&c_f;&c_u;&c_c;&c_i;&c_a;&c_n;&c_s;&c_t;&c_v;&c_o;</trd>
  <trd lng="sk">konfucianizmus</trd>
  <trdgrp lng="zh">
    <trd>&#x5112;&#x5B66; <pr>R&#xFA;xu&#xE9;</pr></trd>,
    <trd>&#x5112;&#x6559; <pr>R&#xFA;ji&#xE0;o</pr></trd>,
    <trd>&#x5B54;&#x6559; <pr>K&#x1D2;ngji&#xE0;o</pr></trd>,
    <trd>&#x5112;&#x5B66; <pr>r&#xFA;xu&#xE9;</pr></trd>,
    <trd>&#x5112;&#x5BB6; <pr>r&#xFA;ji&#x101;</pr></trd>,
    <trd>&#x5112;&#x6559; <pr>r&#xFA;ji&#xE0;o</pr></trd>
  </trdgrp>
</drv>

</art>

