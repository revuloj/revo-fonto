    <trd>&#x559C;&#x5287;&#x5F79;&#x8005;  <pr>&#x304D;&#x3052;&#x304D;&#x3084;&#x304F;&#x3057;&#x3083;</pr></trd>
  </trdgrp>
  <trd lng="pl">komediant</trd>
  <trd lng="ru">&c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_a;&c_n;&c_t;</trd>
  <trdgrp lng="sk">
    <trd>komediant</trd>,
    <trd>komik</trd>
  </trdgrp>
  <trd lng="uk">&#x43A;&#x43E;&#x43C;&c_je;&c_d;&c_ib;&c_j;&#x43D;&c_i;&c_j; &c_a;&#x43A;&c_t;&#x43E;&c_r;</trd>
  <trdgrp lng="zh">
