<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>komedi</rad>/o
</kap>
<drv mrk="komedi.0o">
  <kap><tld/>o</kap>
  <snc mrk="komedi.0o.TEA">
    <uzo tip="fak">TEA</uzo>
    <dif>
      <ref tip="super" cel="teatr.0ajxo">Teatra&jcirc;o</ref>, kiu ekscitas la
      ridon prezentante komikajn personojn a&ubreve; amuzajn eksterordinarajn
      cirkonstancojn:
      <ekz>
        la <tld/>oj de Aristofano, Moliero;
      </ekz>
      <ekz>
        karaktera <tld/>o
        <klr>(kiu prezentas ridindajn malvirtetojn)</klr>;
      </ekz>
      <ekz>
        intriga <tld/>o
        <klr>(kiu prezentas amuzajn aventurojn)</klr>;
      </ekz>
      <ekz>
        mora <tld/>o
        <klr>(prezentanta maniojn proprajn je iu tempo a&ubreve; lando)</klr>.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>Kom&ouml;die</trd>,
      <trd>Lustspiel</trd>
    </trdgrp>
    <trd lng="fr">com&eacute;die<klr tip="ind"> (th&eacute;&acirc;tre)</klr></trd>
    <trdgrp lng="nl">
      <trd>comedie</trd>,
      <trd>blijspel</trd>
    </trdgrp>
  </snc>
  <snc mrk="komedi.0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Aran&gcirc;o malsincera por trompi per falsa &scirc;ajno;
      &scirc;ajnigo, hipokriteco:
      <ekz>
        perfidulo, ludanta la <tld/>on de lojaleco<fnt>B</fnt>.
      </ekz>
    </dif>
    <trd lng="de">Kom&ouml;die</trd>
    <trdgrp lng="fr">
      <trd>com&eacute;die<klr tip="ind"> (fig.)</klr></trd>,
      <trd>exag&eacute;ration</trd>,
      <trd>farce</trd>,
      <trd>tromperie</trd>
    </trdgrp>
    <trd lng="nl">comedie</trd>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_m;&c_e;&c_d;&c_y;&c_ja;</trd>
  <trd lng="ru">&c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_ja;</trd>
</drv>

<drv mrk="komedi.0a">
  <kap><tld/>a</kap>
  <snc mrk="komedi.0a.TEA">
    <uzo tip="fak">TEA</uzo>
    <dif>
      Rilata al <tld/>o:
      <ekz>
        <tld/>a aktoro, teatra&jcirc;o, verkisto, sceno, karaktero.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_k;&c_a;&c_m;&c_e;&c_d;&c_y;&c_j;&c_n;&c_y;</trd>,
      <trd>&c_k;&c_a;&c_m;&c_ib;&c_ch;&c_n;&c_y;</trd>,
      <trd>&c_s;&c_mol;&c_m;&c_ja;&c_sh;&c_l;&c_ib;&c_v;&c_y;</trd>
    </trdgrp>
  <trdgrp lng="fr">
    <trd>de <ind>com&eacute;die</ind></trd>,
    <trd>comique<klr tip="ind"> (adj.)</klr></trd>
  </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_j;&c_n;&c_y;&c_j;</trd>,
      <trd>&c_k;&c_o;&c_m;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>,
      <trd>&c_k;&c_o;&c_m;&c_i;&c_ch;&c_n;&c_y;&c_j;</trd>
    </trdgrp>
  </snc>
  <snc mrk="komedi.0a.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Malsincera, hipokrita:
      <ekz>
        oni diros, ke ni aran&gcirc;is <tld/>an elekton<fnt>Z</fnt>.
      </ekz>
    </dif>
  <trdgrp lng="fr">
    <trd>de <ind>com&eacute;die</ind></trd>,
    <trd>com&eacute;dien<klr tip="ind"> (adj.)</klr></trd>
  </trdgrp>
  </snc>
</drv>

<drv mrk="komedi.0i">
  <kap><tld/>i</kap>
  <snc mrk="komedi.0i.TEA">
    <gra><vspec>ntr</vspec></gra>
    <uzo tip="fak">TEA</uzo>
    <dif>
      Ludi <tld/>on.
    </dif>
    <trd lng="be">&c_g;&c_r;&c_a;&c_c;&c_mol; <ind>&c_k;&c_a;&c_m;&c_e;&c_d;&c_y;&c_ju;</ind></trd>
    <trd lng="ru">&c_i;&c_g;&c_r;&c_a;&c_t;&c_mol; &c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_ju;</trd>
  </snc>
  <snc mrk="komedi.0i.FIG">
    <gra><vspec>tr</vspec></gra>
    <uzo tip="stl">FIG</uzo>
    <ref tip="dif" cel="hipokr.0i">hipokriti</ref>
    <trd lng="ru">&c_l;&c_o;&c_m;&c_a;&c_t;&c_mol; &c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_ju;</trd>
  </snc>
  <trdgrp lng="fr">
    <trd>jouer la <ind>com&eacute;die</ind></trd>,
    <trd>affecter<klr tip="ind"> (feindre)</klr></trd>,
    <trd>feindre</trd>,
    <trd>faire l'<ind>hypocrite</ind></trd>,
    <trd>pr&eacute;tendre<klr tip="ind"> (feindre)</klr></trd>,
    <trd>faire <ind>semblant</ind> (de)</trd>
  </trdgrp>
  <trd lng="nl">comedie spelen</trd>
</drv>

<drv mrk="komedi.0isto">
  <kap><tld/>isto</kap>
  <snc>
    <dif>
      Aktoro, ludanta <tld/>on.
    </dif>
  </snc>
  <trd lng="fr">com&eacute;dien<klr tip="ind"> (subst.)</klr></trd>
</drv>

</art>
