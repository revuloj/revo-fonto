<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>komedi</rad>/o
</kap>
<drv mrk="komedi.0o">
  <kap><tld/>o</kap>
  <snc num="1">
    <uzo tip="fak">BELE</uzo>
    <dif>
      Teatra&jcirc;o, kiu ekscitas la ridon prezentante komikajn personojn
      a&ubreve; amuzajn eksterordinarajn cirkonstancojn:
      <ekz>la <tld/>oj de Aristofano, Moliero;</ekz>
      <ekz>
        karaktera <tld/>o
        <klr>(kiu prezentas ridindajn malvirtetojn)</klr>;
      </ekz>
      <ekz>
        intriga <tld/>o
        <klr>(kiu prezentas amuzajn aventurojn)</klr>;
      </ekz>
      <ekz>
        mora <tld/>o
        <klr>(prezentanta maniojn proprajn je iu tempo a&ubreve; lando)</klr>.
      </ekz> 
    </dif>
    <refgrp tip="sin">
      <ref cel="dram.0o">dramo</ref>,
      <ref cel="fars.0o">farso</ref>,
      <ref cel="revu.0o">revuo</ref>.
    </refgrp>
    <trdgrp lng="de">
      <trd>Kom&ouml;die</trd>,
      <trd>Lustspiel</trd>
    </trdgrp>
  </snc>
  <snc num="2">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Aran&gcirc;o malsincera por trompi per falsa &scirc;ajno;
      &scirc;ajnigo, hipokriteco:
      <ekz>perfidulo, ludanta la <tld/>on de lojaleco<fnt>B</fnt>.</ekz> 
    </dif>
    <trd lng="de">Kom&ouml;die</trd>
  </snc>
  <trd lng="ru">&c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_ja;</trd>
</drv>
<drv mrk="komedi.0a">
  <kap><tld/>a</kap>
  <snc num="1">
    <uzo tip="fak">BELE</uzo>
    <dif>
      Rilata al <tld/>o:
      <ekz><tld/>a aktoro, teatra&jcirc;o, verkisto, sceno, karaktero.</ekz>
    </dif>
    <trdgrp lng="ru">
      <trd>&c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_j;&c_n;&c_y;&c_j;</trd>,
      <trd>&c_k;&c_o;&c_m;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>,
      <trd>&c_k;&c_o;&c_m;&c_i;&c_ch;&c_n;&c_y;&c_j;</trd>
    </trdgrp>
  </snc>
  <snc num="2">
    <dif>
      Malsincera, hipokrita:
      <ekz>oni diros, ke ni aran&gcirc;is <tld/>an elekton<fnt>Z</fnt>.</ekz> 
    </dif>
  </snc>
</drv>
<drv mrk="komedi.0i">
  <kap><tld/>i</kap>
  <snc num="1">
    <gra><vspec>ntr</vspec></gra>
    <uzo tip="fak">BELE</uzo>
    <dif>
      Ludi <tld/>on. 
    </dif>
    <trd lng="ru">&c_i;&c_g;&c_r;&c_a;&c_t;&c_mol; &c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_ju;</trd>
  </snc>
  <snc num="2">
    <gra><vspec>tr</vspec></gra>
    <dif>
      Hipokriti.  
    </dif>
    <trd lng="ru">&c_l;&c_o;&c_m;&c_a;&c_t;&c_mol; &c_k;&c_o;&c_m;&c_je;&c_d;&c_i;&c_ju;</trd>
  </snc>
</drv>
</art>
