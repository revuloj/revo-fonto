<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>konus</rad>/o
</kap>
<drv mrk="konus.0o">
  <kap><ofc>*</ofc><tld/>o</kap>

  <snc mrk="konus.0o.surfaco">
    <uzo tip="fak">MAT</uzo>
    <dif>
      <ref tip="super" cel="surfac.0o.MAT">Surfaco</ref>, naskita de
      &ccirc;iuj rektoj
      <klr>(&gcirc;iaj <ref cel="nask.0anto.rekto">naskantoj</ref>)</klr>, 
      kiuj havas unu komunan punkton 
      <klr>(la <ref cel="vertic.0o.konuso">verticon</ref> de la <tld/>o)</klr>, 
      kaj sekcas fiksan linion 
      <klr>(&gcirc;ian <ref cel="direkt.0anto.linio">direktanton</ref>)</klr>:
      <ekz>
        cirkla, elipsa, kvadrata ks <tld/>o <klr>(kies direktanto estas cirklo,
        elipso, kvadrato ks orta al &gcirc;ia akso)</klr>;
      </ekz>
      <ekz>
        se ebeno sekcas <tld/>on nur en &gcirc;ia vertico, &gcirc;i apartigas
        du subpartojn de la surfaco, kiujn oni nomas anka&ubreve; <tld/>oj
        a&ubreve; duon<tld/>oj.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="konik.0o">koniko</ref>.
    </refgrp>
  </snc>
  <snc mrk="konus.0o.solido">
    <uzo tip="fak">MAT</uzo>
    <dif>
      <ref tip="super" cel="solid.0o.geometrio">Solido</ref>, kiun limas
      <ref cel="konus.0o.surfaco">duon<tld/>a surfaco</ref> kaj unu
      ebena surfaco <klr>(&gcirc;ia <ref cel="baz.0o">bazo</ref>)</klr>, 
      kiu sekcas la <tld/>an surfacon la&ubreve; fermita linio.
    </dif>
  </snc>
  <snc num="3">
    <dif>
      Objekto, havanta formon de <tld/>o: 
      <ekz>suker<tld/>o;
      </ekz> <ekz><tld/>o el lumradioj;
      </ekz> <ekz><tld/>formaj funeloj.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">c&ocirc;ne</trd>
  <trd lng="pt">cone</trd>
</drv>
</art>

