<kap>
  <rad>slojd</rad>/o
</kap>
<drv mrk="slojd.0o">
  <kap><tld/>o</kap>
  <snc>
  <uzo tip="fak">SPO</uzo>
    <dif>
      Metia <ref tip="super" cel="labor.man0o">manlaboro</ref>, 
      enkondukita 1865 de <nom>Uno Cygnaeus</nom> en <ref cel="finland.0o">Finlando</ref>
      kaj poste transprenita en lernejoj de multaj landoj kun la celo &gcirc;enerale
      eduki la kapablon kaj personecon de lernantoj:
      <ekz>
        multaj finnoj faras nestokestojn por birdoj dum siaj lernejaj <tld/>olecionoj
        <fnt>
          <bib>Monato</bib>
          <aut>Saliko</aut>
          <vrk><url ref="&Monato;/2010/009971.php">Nestokestoj</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="klr">(pli vastasence)</uzo>
        se oni nur laboras kaj spektas televidon, eblas deprimi&gcirc;i kaj 
        malsani&gcirc;i, manlabora&jcirc;oj kaj <tld/>o kuracas, ofte tamen en
        la lo&gcirc;ejo mankas spaco kaj iloj
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="&Monato;/2004/008393.html">Alproprigi hobion</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_r;&c_a;&c_c;&c_a; <klr tip="amb">(&c_p;&c_r;&c_a;&c_d;&c_m;&c_je;&c_t; &c_u;
  &c_sh;&c_k;&c_o;&c_l;&c_je;)</klr></trd>
  <trd lng="cs">&scaron;koln&iacute; ro&ccaron;n&iacute; pr&aacute;ce</trd>
  <trdgrp lng="de">
    <trd>Werken</trd>,
    <trd>Werkunterricht</trd>
  </trdgrp>
  <trd lng="en">sloyd</trd>
  <trd lng="es">trabajo escolar <klr>(con tijeras, cartulina, pegamento,
  tela, ...)</klr></trd>
  <trd lng="fr">sloyd</trd>
  <trd lng="hu">politechnika <klr tip="ind">(iskolai)</klr></trd>
  <trd lng="ja">&#x30B9;&#x30A6;&#x30A7;&#x30FC;&#x30C7;&#x30F3;&#x5F0F;&#x5DE5;&#x82B8;&#x6559;&#x80B2;  [<ind>&#x3059;&#x3046;&#x3047;&#x30FC;&#x3067;&#x3093;&#x3057;&#x304D;&#x3053;&#x3046;&#x3052;&#x3044;&#x304D;&#x3087;&#x3046;&#x3044;&#x304F;</ind>]</trd>
  <trdgrp lng="nl">
    <trd>sl&ouml;jd</trd>,
    <trd>handenarbeid</trd>
  </trdgrp>
  <trd lng="ru">&c_t;&c_r;&c_u;&c_d; <klr tip="amb">(&c_sh;&c_k;&c_o;&c_l;&c_mol;&c_n;&c_y;&c_j;
  &c_p;&c_r;&c_je;&c_d;&c_m;&c_je;&c_t;)</klr></trd>
  <trd lng="sk">ro&ccaron;n&aacute; pr&aacute;ca <klr>(polytechnick&aacute;)</klr></trd>
  <trd lng="sv">sl&ouml;jd</trd>
  <trd lng="uk">&#x441;&#x43B;&#x43E;&#x439;&#x434; (&#x432;&#x438;&#x434; &#x448;&#x43A;&#x456;&#x43B;&#x44C;&#x43D;&#x43E;&#x457; &#x440;&#x443;&#x447;&#x43D;&#x43E;&#x457; &#x43F;&#x440;&#x430;&#x446;&#x456;)</trd>
</drv>
