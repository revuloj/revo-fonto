<kap>
  <rad>oratori</rad>/o
  <fnt><bib>JED</bib></fnt></kap>
<drv mrk="oratori.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MUZ</uzo>
  <uzo tip="fak">KRI</uzo>
  <snc mrk="oratori.0o.MUZ">
    <dif>
      Ampleksa, plurparta <ref tip="super" cel="kompon.0ajxo">kompona&jcirc;o</ref>
      por sol-kantistoj, &hcirc;oro kaj orkestro prezentanta rakonton, kutime kristanan, sen
      aktorado:
      <ekz>
        <nom>Liszt</nom> <klr>[&#8230;]</klr> komponis multajn pecojn kun hungarmuzika
        fono, ekzemple la Hungarajn rapsodiojn kaj la <tld/>on Sankta Elizabeto
        <fnt>
          <bib>Monato</bib>
          <aut>Franz-Georg R&ouml;ssler</aut>
          <vrk><url ref="&Monato;/2012/010588.php">Geniulo mondcivitana</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        <nom>Berlioz</nom> enigis en simfonion anka&ubreve; tiajn &gcirc;enrojn kiel kon&ccirc;erto, <tld/>o
        <fnt>
          <bib>KFl</bib>
          <lok>III. Atomoj de evoluo</lok>
        </fnt>;
      </ekz>
      <ekz>
        en la jubilea jaro 1987 ni <klr>[&#8230;]</klr> eldonis klasikan muzikon, la
        Esperantlingvan koncertan registra&jcirc;on de la <tld/>o <nom>H&auml;ndel</nom>: Mesio
        <fnt>
          <bib>Kon11</bib>
          <lok>Intervjuo</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="prt">
      <ref cel="ari.0o">ario</ref>,
      <ref cel="hxor.0ajxo">&hcirc;ora&jcirc;o</ref>,
      <ref cel="recita.0o">recitativo</ref>
    </refgrp>
    <refgrp tip="vid">
      <ref cel="kantat.0o">kantato</ref>,
      <ref cel="oper.0o">opero</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_a;&c_r;&c_a;&c_t;&c_o;&c_r;&c_y;&c_ja;</trd>
  <trd lng="cs">oratorium</trd>
  <trd lng="de">Oratorium</trd>
  <trd lng="es">oratorio</trd>
  <trd lng="fr">oratorio</trd>
  <trd lng="hu">orat&oacute;rium</trd>
  <trd lng="it">oratorio<klr> (mus.)</klr></trd>
  <trd lng="nl">oratorium</trd>
  <trd lng="pl">oratorium</trd>
  <trd lng="pt">orat&oacute;rio</trd>
  <trd lng="ro">oratoriu</trd>
  <trd lng="ru">&c_o;&c_r;&c_a;&c_t;&c_o;&c_r;&c_i;&c_ja;</trd>
  <trd lng="sk">orat&oacute;rium</trd>
  <trdgrp lng="uk">
    <trd>&c_o;&c_r;&c_a;&c_t;&c_o;&c_r;&c_ib;&c_ja;</trd>,
    <trd>&c_m;&c_o;&c_l;&c_i;&c_t;&c_o;&c_v;&c_n;&c_ja;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#31070;&#21095; <pr>sh&eacute;nj&ugrave;</pr></trd>,
    <trd>&#31070;&#21127; <pr>sh&eacute;nj&ugrave;</pr></trd>
  </trdgrp>
</drv>
