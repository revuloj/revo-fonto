<kap>
  <rad>Lingvafranka</rad>/o <fnt><bib>LanLin</bib></fnt>
</kap>

<drv mrk="lingvafranka.0o">
  <kap><tld/>o</kap>
  <snc mrk="lingvafranka.0o.LIN">
    <dif>
      <ref tip="lst" lst="voko:lingvoj" cel="pigxin.0o">Pi&gcirc;ino</ref>
      uzita &ccirc;irka&ubreve; la Mediteranea Maro, precipe en Nordafriko,
      de Mezepoko &gcirc;is en la 19a jarcento;
      anka&ubreve; nomata <nom>Sabir</nom>:
      <ekz>
        disvasti&gcirc;inta opinio, kiun profesoro Cifoletti hastas dementi,
        estas tio, ke la
        <tld lit="l"/>o utiligata iam de krucmilitistoj devenas de
        nord-italaj kaj
        provencaj/okcitanaj dialektoj
        <fnt>
          <aut>R. Pigro</aut>
          <vrk><url ref="https://www.monato.be/2016/011594.php">
          La berbera, lingvafrankao vera</url></vrk>
          <bib>Monato</bib>
          <lok>2019</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">Lingua franca</trd>
  <trd lng="pl">lingua franca</trd>     
  <trd lng="ro">limb&abreve; vehicular&abreve;</trd>
</drv>
