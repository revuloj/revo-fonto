<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: mav.xml,v 1.6 2026/02/16 22:48:54 afido Exp $">
    <kap>
      <rad>mav</rad>/a
    </kap>

<drv mrk="mav.0a">
  <kap><tld/>a</kap>
  <uzo tip="stl">RAR</uzo>
  <uzo tip="stl">POE</uzo>
  <snc mrk="mav.0a.malbona">
    <dif>
      <ref tip="dif" cel="bon.mal0a.maltauxga">Malbona</ref>:
      <ekz>
        se via verko estos <esc>hiperplena</esc> da redundaj neologismoj, &gcirc;i aspektos turpe kaj
        hide, kaj oni etikedos &gcirc;in <tld/>a
        <fnt>
          <bib>LOdE</bib>
          <lok>1999, No 7 (57)</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>ajn neologismojn ili anatemas imite la metodojn de la afganaj taliboj
        <fnt>
          <vrk><url
          ref="https://jorgecice.blogspot.com/2001/01/la-mava-lingvo-neologismoj-kaj.html">La mava
          lingvo: neologismoj kaj malneologismoj en esperanto</url></vrk>
          <lok>artikolo en la libro Lingva arto, 1999</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="acx.0a">a&ccirc;a</ref>,
      <ref cel="mis.0a">misa</ref>
    </refgrp>
    <trd lng="be">&c_d;&c_r;&c_e;&c_n;&c_n;&c_y;</trd>
    <trdgrp lng="de">
      <trd>schlecht</trd>,
      <trd>mies</trd>
    </trdgrp>
    <trd lng="en">bad</trd>
    <trd lng="fr">mal</trd>
    <trd lng="pl">z&lstroke;y <klr>(poetycznie)</klr></trd>
    <trdgrp lng="zh">
      <trd>&#19981;&#33391; <pr>b&ugrave;li&aacute;ng</pr></trd>,
      <trd>&#31967;&#31957; <pr>z&amacron;og&amacron;o</pr></trd>,
      <trd>&#19981;&#21892; <pr>b&ugrave;sh&agrave;n</pr></trd>
    </trdgrp>
  </snc>
  <rim>
    La&ubreve; <fnt><bib>BL</bib></fnt>: Prefere diru <ke>malbona</ke>.
  </rim>
 </drv>
</art>

