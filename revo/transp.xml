<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>transpon</rad>/i
</kap>
<drv mrk="transp.0i">
  <kap>
    <tld/>i
  </kap>
  <gra><vspec>tr</vspec></gra>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <uzo tip="klr">(fakula &jcirc;argono)</uzo>
  <snc>
    <dif>
      <klr>(<ref cel="matric.0o.MAT">matricon</ref>)</klr>
      Apliki la operacion <tld/>o.
    </dif>
  </snc>
  <trd lng="fr">transposer<klr tip="ind"> (une matrice)</klr></trd>
</drv>

<drv mrk="transp.0o">
  <kap>
    <tld/>o
  </kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(de <ref cel="matric.n_p0o">(n,p)-matrico</ref> A)</klr>
      <ref tip="super" cel="operac.0o.MAT">Operacio</ref>, kies rezulto estas
      la (p,n)-matrico B, kies elementoj kun indico (i,j) egalas al la
      elementoj de A kun indico (j,i):
      <ekz>
        <tld/>o transformas horizontalojn al vertikaloj kaj inverse.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">transposition<klr tip="ind"> (de matrice)</klr></trd>
</drv>

<drv mrk="transp.0ajxo">
  <kap>
    <tld/>a&jcirc;o<fnt><bib>MatVort</bib></fnt>, 
    <tld/>ato<fnt><bib>PIV1</bib></fnt>
  </kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(de <ref cel="matric.n_p0o">(n,p)-matrico</ref>)</klr>
      Rezulto de &gcirc;ia <tld/>o:
      <ekz>
        la <tld/>a&jcirc;o de A oni kutime signas per A' a&ubreve;
        <sup>t</sup>A.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Transponierte</trd>
  <trd lng="en">transpose</trd>
  <trd lng="fr">matrice transpos&eacute;e</trd>
  <trd lng="ru">&c_p;&c_je;&c_r;&c_je;&c_s;&c_t;&c_a;&c_v;&c_l;&c_je;&c_n;&c_n;&c_a;&c_ja; <ind>&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a;</ind></trd>
</drv>
</art>
