<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: sofistik.xml,v 1.12 2023/09/30 18:28:27 revo Exp $">
    <kap>
      <rad>sofistik</rad>/o <fnt><bib>PIV2</bib></fnt>
    </kap>

    <drv mrk="sofistik.0o">
      <kap><tld/>o</kap>
      <snc mrk="sofistik.0o.HIS">
        <uzo tip="fak">HIS</uzo>
        <dif>
          Greka kaj romia antikva tradicio de rezon- kaj parolarto,
          precipe
          utilisma kontraste al pli teoria <ref tip="vid" cel="filozo1.0o.FIL">filozofio</ref>.
        </dif>
        <trd lng="hu">szofisztika</trd>
      </snc>
      <snc mrk="sofistik.0o.FIG">
        <uzo tip="stl">FIG</uzo>
        <dif>
          &Ccirc;ia subtila, eventuale trompa parolado:
          <ekz>
            &ccirc;iuj homoj vidas, ke anstata&ubreve; sa&gcirc;eco regas malklereco a&ubreve;
            <tld/>o
            <fnt>
              <aut>Komenio, trad. M. Malovec</aut>,
              <vrk><url ref="http://www.volny.cz/malovec/sago.htm">El la sa&gcirc;o de
              Komenio</url></vrk>,
              <lok>[vidita je 2006-08-23]</lok>
            </fnt>.
          </ekz>
        </dif>
      <refgrp tip="vid">
        <ref cel="skolas.0o">skolastiko</ref>,
        <ref cel="sofist.0o">sofisto</ref>
      </refgrp>
      </snc>
      <trd lng="cs">sofistika</trd>
      <trd lng="fr">sophistique<klr> (subst.)</klr></trd>
      <trd lng="hu">k&ouml;rm&ouml;nfont <ind>okoskod&aacute;s</ind></trd>
      <trd lng="nl">sofistiek</trd>
      <trd lng="pl">sofistyka</trd>
      <trd lng="pt">sof&iacute;stica</trd>
      <trd lng="ru">&c_s;&c_o;&c_f;&c_i;&c_s;&c_t;&c_i;&c_k;&c_a;</trd>
      <trd lng="sk">sofistika</trd>
      <trd lng="uk">&c_s;&#x43E;&c_f;&c_ib;&c_s;&c_t;&c_i;&#x43A;&c_a;</trd>
</drv>

<drv mrk="sofistik.0a">
  <kap><tld/>a</kap>
  <snc mrk="sofistik.0a.HIS">
    <dif>
      La&ubreve; la metodoj de <tld/>o, rilata al <tld/>o.
    </dif>
    <trd lng="hu">szofisztikus</trd>
    <trd lng="nl">sofistisch</trd>
  </snc>
  <snc mrk="sofistik.0a.FIG">
    <dif>
      Tre a&ubreve; tro subtila:
      <ekz>
        tial tra la linioj de t.n. <tld/>a, e&ccirc; absurda poezio lasu
        preterflugi la vortojn, tiel ke la asociado, la etoso
        riveli&gcirc;as
        <fnt>
          <aut>Poul Thorsen</aut>,
          <vrk>Babile kun mi mem. - Beletra: 1996</vrk>,
          <lok><url ref="http://www.poulthorsen.dk/finbabile.htm">Finbabile?</url></lok>
        </fnt>.
      </ekz>
    </dif>
    </snc>
    <trd lng="hu">k&ouml;rm&ouml;nfont</trd>
    <trdgrp lng="nl">
      <trd>spitsvondig</trd>,
      <trd>vals <ind>redenerend</ind></trd>
    </trdgrp>
    <trd lng="pl">sofistyczny</trd>
    <trd lng="pt">sof&iacute;stico</trd>
    <trd lng="ru">&c_s;&c_o;&c_f;&c_i;&c_s;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
</drv>
</art>

