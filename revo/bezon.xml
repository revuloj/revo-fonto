<drv mrk="bezon.0o">
  <kap><tld/>o</kap>
  <snc mrk="bezon.0o.sufero">
    <dif>
      Sufero pro manko de io necesa:
      <ekz>
        kiu tro <tld/>as, tiu le&gcirc;on ne konas
        <fnt>
          <bib>Prv</bib>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>o estas plej forta ordono<fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <trd lng="hu">sz&uuml;ks&eacute;g</trd>
  </snc>
  <snc mrk="bezon.0o.postulo">
    <dif>
      Stato, kiu postulas ion, kiel necesan, la&ubreve;celan 
      a&ubreve; utilan:
      <ekz>
        klareco estas <tld/>o de normala spirito;
      </ekz><ekz>
        en okazo de <tld/>o
        <fnt><bib>Far2</bib>, <lok>&ccirc;ap. 16</lok></fnt>;
      </ekz><ekz>
        la uzado akuzativon en kazo de sen<tld/>o
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="http://www.esperanto.be/fel/mon/007059.html">La influo de la hebrea lingvo sur Esperanto</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="hu">sz&uuml;ks&eacute;g</trd>
  </snc>
  <snc mrk="bezon.0o.manko">
    <dif>
      <ref tip="dif" cel="bezon.0ajxo.KOMUNE"><tld lit="B"/>a&jcirc;o</ref>:
      <ekz>
        havi grandajn, malmultajn, moderajn <tld/>ojn;
      </ekz><ekz>
        La <tld/>oj de l' kortego estis malavare provizitaj
        <fnt><bib>Far2</bib>, <lok>&ccirc;ap. 9a.</lok></fnt>.
      </ekz>
    </dif>
    <trd lng="hu">sz&uuml;ks&eacute;glet</trd>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_t;&c_r;&c_e;&c_b;&c_a;</trd>
  <trdgrp lng="br">
    <trd>ezhomm</trd>,
    <trd>c'hoant</trd>
  </trdgrp>
  <trd lng="ca">necessitat</trd>
  <trdgrp lng="cs">
    <trd>n&aacute;le&zcaron;itost <klr>(co je nutn&eacute;)</klr></trd>,
    <trd>pot&rcaron;eba</trd>,
    <trd>pot&rcaron;ebn&aacute; v&ecaron;c</trd>,
    <trd>po&zcaron;adavek</trd>
  </trdgrp>
  <trd lng="de">Bed&uuml;rfnis</trd>
  <trdgrp lng="en">
    <trd>need</trd>,
    <trd>want</trd></trdgrp>
  <trd lng="es">necesidad</trd>
  <trdgrp lng="fr">
    <trd>besoin</trd>,
    <trd>n&eacute;cessit&eacute;</trd></trdgrp>
  <trd lng="he">&#x5E6;&#x5D5;&#x5B9;&#x5E8;&#x5B6;&#x5DA;</trd>
  <trd lng="oc">besonh</trd>
  <trdgrp lng="pl">
     <trd>potrzeba</trd>,
     <trd>zapotrzebowanie</trd>
   </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_n;&c_u;&c_zh;&c_d;&c_a;</trd>,
    <trd>&c_p;&c_o;&c_t;&c_r;&c_je;&c_b;&c_n;&c_o;&c_s;&c_t;&c_mol;
    </trd>
  </trdgrp>
  <trd lng="sk">potrebn&aacute; vec</trd>
  <trd lng="sv">behov</trd>
  <trd lng="tp">wile</trd>
</drv>

<drv mrk="bezon.0a">
  <kap><tld/>a</kap>
  <snc mrk="bezon.0a.bezonata">
    <dif>
      <tld lit="B"/>ata, havenda por iu celo:
      <ekz>
        &Ccirc;u lingvo internacia estas <tld/>a?
        <fnt><bib>EE</bib>, <lok>&ccirc;ap. 2a</lok></fnt>;
      </ekz><ekz>
        <uzo tip="stl">FRAZ</uzo>
        por vino bona &scirc;ildo <klr>(reklamo)</klr>
        ne <tld/>a;
      </ekz><ekz>
        <uzo tip="stl">FRAZ</uzo>
        kiu avidas pli bonan, perdas plej <tld/>an
        <fnt><bib>PrV</bib></fnt>;
      </ekz><ekz>
        <uzo tip="stl">FRAZ</uzo>
        &scirc;paru kiam bone, vi havos kiam <tld/>e
        <fnt><bib>PrV</bib></fnt>;
      </ekz><ekz>
        la a&jcirc;ojn tute sen<tld/>ajn mi simple for&jcirc;etis, dum la a&jcirc;ojn ja
        <tld/>ajn, sed &ccirc;i-vintre ne <tld/>atajn mi metis en la
        kameron;
      </ekz><ekz>
        5 jaroj estis <tld/>aj por venki ilin.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="util.0a">utila</ref>,
      <ref cel="neces.0a">necesa</ref>
    </refgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_a;&c_t;&c_r;&c_e;&c_b;&c_n;&c_y;</trd>,
    <trd>&c_n;&c_je;&c_a;&c_b;&c_h;&c_o;&c_d;&c_n;&c_y;</trd>
  </trdgrp>
  <trdgrp lng="br">
    <trd>rekis</trd>,
    <trd>ezhommek<klr tip="ind"> (trao&ugrave;)</klr></trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>nutn&yacute;</trd>,
    <trd>pot&rcaron;ebn&yacute;</trd>
  </trdgrp>
  <trd lng="de">n&ouml;tig</trd>
  <trdgrp lng="en">
    <trd>needed</trd></trdgrp>
  <trd lng="es">necesario</trd>
  <trd lng="fr">n&eacute;cessaire</trd>
  <trd lng="he">&#x5E0;&#x5D7;&#x5D5;&#x5E5;</trd>
  <trd lng="hu">sz&uuml;ks&eacute;ges</trd>
  <trdgrp lng="pl">
    <trd>potrzebny</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_n;&c_u;&c_zh;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_t;&c_r;&c_je;&c_b;&c_u;&c_ju;&c_shch;&c_i;&c_j;&c_s;&c_ja;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>nutn&yacute;</trd>,
    <trd>potrebn&yacute;</trd>
  </trdgrp>
</drv>

<drv mrk="bezon.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc mrk="bezon.0ajxo.KOMUNE">
    <dif>
      Io havenda kiel necesa, la&ubreve;cela a&ubreve; utila:
      <ref tip="sin" cel="bezon.0o.manko"><tld/>o<sncref/></ref>:
      <ekz>
        vintraj <tld/>a&jcirc;oj
        <fnt><aut>A. Kivi, trad. I. Ekstr&ouml;m</aut>,
             <vrk>Sep fratoj</vrk>, <lok>1947</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_a;&c_t;&c_r;&c_e;&c_b;&c_n;&c_a;&c_je;
      <klr>(&c_n;&c_a;&c_z;.)</klr></trd>,
    <trd>&c_n;&c_je;&c_a;&c_b;&c_h;&c_o;&c_d;&c_n;&c_a;&c_je;
      <klr>(&c_n;&c_a;&c_z;.)</klr></trd>
  </trdgrp>
  <trd lng="br">ezhomm</trd>
  <trd lng="en">need</trd>
  <trd lng="es">necesidad</trd>
  <trd lng="fr">besoin</trd>
  <trd lng="he">&#x5E6;&#x5D5;&#x5B9;&#x5E8;&#x5B6;&#x5DA;</trd>
  <trd lng="hu">sz&uuml;ks&eacute;glet</trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_o;&c_t;&c_r;&c_je;&c_b;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_n;&c_je;&c_o;&c_b;&c_h;&c_o;&c_d;&c_i;&c_m;&c_o;&c_je;
      <klr>(&c_s;&c_u;&c_shch;.)</klr></trd>,
    <trd>&c_n;&c_u;&c_zh;&c_n;&c_o;&c_je; <klr>(&c_s;&c_u;&c_shch;.)
    </klr></trd>
  </trdgrp>
</drv>

<drv mrk="bezon.sen0a">
  <kap>sen<tld/>a</kap>
  <snc mrk="bezon.sen0a.KOMUNE">
    <dif>
      Ne<tld/>ata, nenecesa:
      <ekz>
        multo da vortoj fari&gcirc;as tute sen<tld/>a por lernado
        <fnt>
          <bib>EE</bib>
        </fnt>;
      </ekz>
      <ekz>
        oni ne devas &jcirc;uri sen<tld/>e
        <fnt>
          <bib>Far2</bib>
          <lok>&Ccirc;apitro V</lok>
        </fnt>;
      </ekz>
      <ekz>
        ordoni, ke oni ne turmentu la homojn sen<tld/>e
        <fnt>
          <bib>Far2</bib>
          <lok>&Ccirc;apitro XIX</lok>
        </fnt>;
      </ekz>
      <ekz>
        kiu volos kontra&ubreve;batali tiun naturan iradon, nur perdos sen<tld/>e siajn fortojn
        <fnt>
          <bib>Paroloj</bib>
          <vrk>Parolado anta&ubreve; la Sesa Kongreso Esperantista en Washington en la 15a de a&ubreve;gusto 1910</vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_n;&c_je;&c_p;&c_a;&c_t;&c_r;&c_e;&c_b;&c_n;&c_y;
  </trd>
  <trd lng="br">diezhomm</trd>
  <trdgrp lng="cs">
    <trd>nepot&rcaron;ebn&yacute;</trd>,
    <trd>zbyte&ccaron;n&yacute;</trd>
  </trdgrp>
  <trd lng="de">unn&ouml;tig</trd>
  <trdgrp lng="en">
    <trd>needless</trd>,
    <trd>unnecessary</trd></trdgrp>
  <trd lng="es">innecesario</trd>
  <trdgrp lng="fr">
    <trd>inutile</trd>,
    <trd>superflu</trd>,
    <trd>ne <ind>servant</ind> &agrave; rien</trd></trdgrp>
  <trd lng="hu">sz&uuml;ks&eacute;gtelen</trd>
  <trdgrp lng="pl">
   <trd>niepotrzebny</trd>,
   <trd>zb&eogonek;dny</trd>
 </trdgrp>
  <trd lng="ru">&c_n;&c_je;&c_n;&c_u;&c_zh;&c_n;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>nepotrebn&yacute;</trd>,
    <trd>zbyto&ccaron;n&yacute;</trd>
  </trdgrp>
</drv>

<drv mrk="bezon.viv0ajxo">
  <kap>viv<tld/>a&jcirc;o</kap>
  <snc mrk="bezon.viv0ajxo.EKON">
    <uzo tip="fak">EKON</uzo>
    <dif>
      <ref tip="dif" cel="neces.viv0ajxo.EKON">Vivnecesa&jcirc;o</ref>:
      <ekz>
        la Komerca Ministerio da&ubreve;re reguligas la merkaton
        de viv<tld/>a&jcirc;oj
        <fnt>
          <aut>&Ccirc;ina Radio Internacia</aut>,
          <vrk><url ref="http://www.youtube.com/watch?v=Qt97P1xEbLE">
          Panorame</url></vrk>,
          <lok>2010-12-24</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="viv.por0ajxo.KOMUNE">porviva&jcirc;o</ref>,
      <ref cel="pan.viv0o.FIG">vivpano</ref>
    </refgrp>
  </snc>
  <trd lng="de">Lebensmittel</trd>
  <trd lng="es">art&iacute;culo de primera necesidad</trd>
  <trdgrp lng="fr">
    <trd>n&eacute;cessaire<klr> (le ~, subst.)</klr></trd>,
