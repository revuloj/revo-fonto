<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>barbir</rad>/o
</kap>
<drv mrk="barbir.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <dif>
      Tiu, kiu profesie razas a&ubreve; tondas barbon, tondas kaj kombas 
      harojn:
      <ekz>
        vi neniam vizitis <tld/>on
        <fnt><aut>Machado de Assis, trad. Paulo Viana</aut>
        <vrk>La divenistino kaj aliaj rakontoj</vrk><lok>Oportuno, jaro
        2005a, p.
	35a</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="friz.0isto">frizisto</ref>,
      <ref cel="komb.0isto">kombisto</ref>,
      <ref cel="raz.0isto">razisto</ref>.
    </refgrp>
    <adm>
      La referencoj estas kvaza&ubreve;aj sinonimoj.
      La nuancoj koncernas epokon, landon, stilon, tipon de
      klientoj ktp.<aut>MB</aut>
    </adm>
  </snc>
  <trdgrp lng="be">
    <trd>&c_g;&c_a;&c_l;&c_ja;&c_r;</trd>,
    <trd>&c_c;&c_y;&c_r;&c_u;&c_l;&c_mol;&c_n;&c_ib;&c_k;</trd>
  </trdgrp>
  <trdgrp lng="br">
    <trd>perukenner<klr> [hararo]</klr></trd>,
    <trd>barver<klr> [barbo]</klr></trd>
  </trdgrp>
  <trdgrp lng="ca">
    <trd>barber</trd>,
    <trd>perruquer</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Fris&ouml;r</trd>,
    <trd>Haarschneider</trd>,
    <trd>Barbier<klr> [ark]</klr></trd>
  </trdgrp>
  <trd lng="en">barber</trd>
  <trd lng="es">barbero</trd>
  <trdgrp lng="fa">
    <trd>&a_A_madda;&a_r;&a_A;&f_y;&a_sh;&f_g;&a_r;</trd>,
    <trd>&a_s;&a_l;&a_m;&a_A;&a_n;&f_y;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>coiffeur</trd>,
    <trd>barbier</trd>
  </trdgrp>
  <trd lng="hu">borb&eacute;ly</trd>
  <trdgrp lng="nl">
    <trd>kapper</trd>,
    <trd>barbier</trd>
  </trdgrp>
  <trdgrp lng="pl">
  <trd>fryzjer</trd>,
  <trd>golibroda <klr>(rzadko)</klr></trd>,
  <trd>balwierz <klr>(dawne)</klr></trd>,
  <trd>cyrulik <klr>(dawne)</klr></trd>
  </trdgrp>
  <trd lng="pt">barbeiro</trd>
  <trdgrp lng="ru">
    <trd>&c_c;&c_i;&c_r;&c_ju;&c_l;&c_mol;&c_n;&c_i;&c_k;</trd>,
    <trd>&c_b;&c_r;&c_a;&c_d;&c_o;&c_b;&c_r;&c_je;&c_j;</trd>
  </trdgrp>
  <trd lng="sv">barberare</trd>
</drv>
</art>
