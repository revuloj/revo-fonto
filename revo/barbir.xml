<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>barbir</rad>/o
</kap>
<drv mrk="barbir.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <dif>
      Tiu, kiu profesie razas a&ubreve; tondas barbon, tondas kaj kombas harojn.
    </dif>
    <refgrp tip="sin">
      <ref cel="friz.0isto">frizisto</ref>,
      <ref cel="komb.Oisto">kombisto</ref>,
      <ref cel="raz.0isto">razisto</ref>.
    </refgrp>
    <adm>
      La referencoj estas kvaza&ubreve;aj
      sinonimoj. La nuancoj koncernas epokon, landon, stilon, tipon de
      klientoj ktp.<aut>MB</aut>
    </adm>
  </snc>
  <trd lng="de">Fris&ouml;r</trd>
  <trdgrp lng="fr">
    <trd>coiffeur</trd>,
    <trd>barbier</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>kapper</trd>,
    <trd>barbier</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_c;&c_i;&c_r;&c_ju;&c_l;&c_mol;&c_n;&c_i;&c_k;</trd>,
    <trd>&c_b;&c_r;&c_a;&c_d;&c_o;&c_b;&c_r;&c_je;&c_j;</trd>
  </trdgrp>
  <trd lng="sv">barberare</trd>
</drv>
</art>
