<drv mrk="fid.mem0a">
  <kap>
    mem<tld/>a
  </kap>
  <snc>
    <dif>
      <tld lit="F"/>anta sian propran kapablon, potencon ktp:
      <ekz>
        liaj okuloj brilis, lia aspekto estis mem<tld/>a, lia irmaniero fiera
        <fnt>
          <bib>Kandid</bib>
          <lok>&Ccirc;apitro XXIV</lok>
        </fnt>;
      </ekz>
      <ekz>
        Mi indignas kontra&ubreve; la nacioj mem<tld/>aj
        <fnt>
          <bib>MT</bib>
          <lok>Ze&hcirc;arja 1:15</lok>
        </fnt>;
      </ekz>
      <ekz>
        la tro mem<tld/>a a&ubreve; blindigita pastraro sciis nenion
        <fnt>
          <bib>Far2</bib>
          <lok>&Ccirc;apitro XI</lok>
        </fnt>;
      </ekz>
      <ekz>
        mem<tld/>a svingo de la majstra mano
        <fnt>
          <bib>&Ccirc;uk&ccirc;oj</bib>
          <lok>Dua skizo:</lok>
        </fnt>;
      </ekz>
      <ekz>
        tiu heroo <klr>[&#8230;]</klr> kun tia mem<tld/>a mieno sidi&gcirc;is anta&ubreve; la fortepiano,
        fanfaronante, ke li ludos pli bone ol &ccirc;iuj
        <fnt>
          <bib>EE</bib>
          <lok>VII</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[ili]</klr> havis teni&gcirc;on mem<tld/>an, viza&gcirc;esprimon trankvilan, kontentan
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        li estis mem<tld/>a, iom &scirc;ercema kaj iel kokete kolerema &ndash; li ne povis ne pla&ccirc;i
        <fnt>
          <bib>PatrojFiloj</bib>
          <lok>VII</lok>
        </fnt>;
      </ekz>
      <ekz>
        mem<tld/>a kaj snoba, kiel &scirc;atata de la imperiestro, magnato
        <fnt>
          <bib>Metrop</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="aplomb.0a">aplomba</ref>,
      <ref cel="fier.0a">fiera</ref>,
      <ref cel="tim.mal0a">maltima</ref>,
      <ref cel="cert.mem0a">memcerta</ref>,
      <ref cel="konten.mem0a">memkontenta</ref>
    </refgrp>
  </snc>
  <trdgrp lng="de">
    <trd>sebstbewusst</trd>,
    <trd>selbstsicher</trd>
  </trdgrp>
  <trd lng="en">self-confident</trd>
</drv>


<drv mrk="fid.mem0o">
  <kap>mem<tld/>o</kap>
  <snc mrk="fid.mem0o.PSI">
    <dif>
      <tld lit="F"/>o je si mem, je sia sa&gcirc;o, kapablo, potenco:
      <ekz>
        lia mem<tld/>o kaj aristokrata &scirc;ajno konfuzis la knabinon
        <fnt>
          <bib>IK</bib>
          <lok>&Ccirc;apitro I</lok>
        </fnt>;
      </ekz>
      <ekz>
        ju pli li parolis, des pli lia &scirc;ajno de mem<tld/>o paligis Herbenon
        <fnt>
          <bib>ChL</bib>
          <lok>&Ccirc;apitro Kvara</lok>
        </fnt>;
      </ekz>
      <ekz>
        la mem<tld/>o kreskis, la fingroj lerti&gcirc;is, la tonoj fari&gcirc;is pli belsonaj kaj
        klaraj,
        <fnt>
          <bib>HsT</bib>
          <lok>La nepo</lok>
        </fnt>;
      </ekz>
      <ekz>
        la trankvileco kaj mem<tld/>o de la juna virino &scirc;ajne inspiris al li konfidon
        kaj esperon
        <fnt>
          <bib>MrA</bib>
          <lok>&Ccirc;apitro XV</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="aplomb.0o">aplombo</ref>,
      <ref cel="arogan">aroganteco</ref>,
      <ref cel="fier">fiereco</ref>,
      <ref cel="humil">malhumileco</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_s;&c_a;&c_m;&c_a;&c_w;&c_p;&c_e;&c_w;&c_n;&c_je;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
