<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>dorm</rad>/i
</kap>
<drv mrk="dorm.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="dorm.0i.ripozi">
    <dif>
      Esti en stato de korpa kaj spirita senaktiveco, kiu ordinare
      okazas dum &ccirc;iu nokto, kaj estas necesa por ripozigi la homojn
      kaj la bestojn:
      <ekz>
        nia sukceso ne lasas ilin <tld/>i<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>i &scirc;tonan <klr>(profundan)</klr> <tld/>on<fnt>B</fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="dorm.0i.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Ne agi, resti senaga, kvieta:
      <ekz>
        la longe <tld/>intaj semoj komencis
        doni la unuajn trunketojn<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_p;&c_a;&c_c;&c_mol;</trd>
  <trd lng="cs">sp&aacute;t</trd>
  <trdgrp lng="de">
    <trd>schlafen</trd>, <trd>ruhen</trd>
  </trdgrp>
  <trd lng="en">sleep</trd>
  <trd lng="es">dormir</trd>
  <trdgrp lng="fr">
    <trd>dormir</trd>,
    <trd>reposer<klr tip="ind"> (dormir)</klr></trd>
  </trdgrp>
  <trd lng="nl">slapen</trd>
  <trd lng="ru">&c_s;&c_p;&c_a;&c_t;&c_mol;</trd>
</drv>

<drv mrk="dorm.0o">
  <kap><tld/>o</kap>
  <snc mrk="dorm.0o.ripozo">
    <dif>
      Stato de <tld/>anto:
      <ekz>
        <tld/>o estas duonmorto.
      </ekz>
    </dif>
    <trd lng="fr">sommeil<klr tip="ind"> (&eacute;tat du dormeur)</klr></trd>
  </snc>
  <snc mrk="dorm.0o.FIG">
    <dif>
      Senaktiveco, senprogreso.
    </dif>
    <refgrp tip="vid">
      <ref cel="letarg.0o">letargio</ref>,
      <ref cel="marasm.0o">marasmo</ref>,
      <ref cel="stagn">stagno</ref>.
    </refgrp>
    <trdgrp lng="fr">
      <trd>sommeil<klr tip="ind"> (inactivit&eacute;)</klr></trd>,
      <trd>repos<klr tip="ind"> (inactivit&eacute;)</klr></trd>
    </trdgrp>
  </snc>
  <trd lng="be">&c_s;&c_o;&c_n;</trd>
  <trdgrp lng="de">
    <trd>Schlaf</trd>,
    <trd>Ruhe</trd>
  </trdgrp>
  <trd lng="nl">slaap<klr tip="ind"> (het slapen)</klr></trd>
  <trd lng="ru">&c_s;&c_o;&c_n;</trd>
</drv>

<drv mrk="dorm.0ema">
  <kap><tld/>ema</kap>
  <snc>
    <dif>
      Ema <tld/>i:
      <ekz>
        <klr>[mi estas]</klr> ne laca, ne laca... nur iom <tld/>ema
        <fnt><bib>UrdHadda</bib>, <lok>p. 13</lok></fnt>;
      </ekz>
      <ekz>
        <ind><tld/>emo</ind> surprizis lin post tiu rafinite preparita
        man&gcirc;o
        <fnt><bib>UrdHadda</bib>, <lok>p. 26</lok></fnt>.
        <trd lng="fr">sommeil<klr tip="ind"> (envie de dormir)</klr></trd>
        <trd lng="nl">slaap<klr tip="ind"> (het slaperig zijn)</klr></trd>
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">ensommeill&eacute;</trd>
  <trd lng="nl">slaperig</trd>
</drv>

<drv mrk="dorm.0egi">
  <kap><tld/>egi</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Profunde <tld/>i.
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_p;&c_a;&c_c;&c_mol; &c_g;&c_l;&c_y;&c_b;&c_o;&c_k;&c_ib;&c_m; &c_s;&c_n;&c_o;&c_m;</trd>
  <trd lng="fr">dormir d'un sommeil de plomb</trd>
  <trd lng="nl">diep <ind>slapen</ind></trd>
  <trd lng="ru">&c_s;&c_p;&c_a;&c_t;&c_mol; &c_g;&c_l;&c_u;&c_b;&c_o;&c_k;&c_i;&c_m; &c_s;&c_n;&c_o;&c_m;</trd>
</drv>

<drv mrk="dorm.0eti">
  <kap><tld/>eti</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Duon<tld/>i:
      <ekz>li sidas apud la tablo kaj <tld/>etas
<fnt><bib>F</bib>, <lok>&FE; 38</lok></fnt>.</ekz>
    </dif>
  </snc>
  <trd lng="be">&c_d;&c_r;&c_a;&c_m;&c_a;&c_c;&c_mol;</trd>
  <trd lng="de">d&ouml;sen</trd>
  <trdgrp lng="fr">
    <trd>sommeiller</trd>,
    <trd>somnoler</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>soezen</trd>,
    <trd>dutten</trd>,
    <trd>doezelen</trd>
  </trdgrp>
  <trd lng="ru">&c_d;&c_r;&c_je;&c_m;&c_a;&c_t;&c_mol;</trd>
</drv>

<drv mrk="dorm.0igi">
  <kap><tld/>igi</kap>
  <snc mrk="dorm.0igi.ripozigi">
    <dif>
      Igi a&ubreve; teni iun <tld/>anta:
      <ekz>
        la patrino lulante <tld/>igas la infanon;
      </ekz>
      <ekz>
        <tld/>igi pacienton per kloroformo.
      </ekz>
    </dif>
  </snc>
  <snc mrk="dorm.0igi.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Trompante trankviligi:
      <ekz>
        <tld/>igi la suspektojn de iu<fnt>B</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_u;&c_s;&c_y;&c_p;&c_l;&c_ja;&c_c;&c_mol;</trd>
  <trd lng="fr">endormir</trd>
  <trd lng="nl">in <ind>slaap</ind> doen</trd>
  <trd lng="ru">&c_u;&c_s;&c_y;&c_p;&c_i;&c_t;&c_mol;</trd>
</drv>

<drv mrk="dorm.en0igi">
  <kap>en<tld/>igi</kap>
  <snc>
    <dif>
      Meti iun en <tld/>on:
      <ekz>
        sed <tld/>u nun, fari&gcirc;u fre&scirc;a kaj sana! Mi
        kantos kaj en<tld/>igos vin
        <fnt><bib>Fab2</bib>, <lok>La najtingalo</lok></fnt>;
      </ekz>
      <ekz>
        kaj &scirc;i en<tld/>igis lin sur siaj genuoj, kaj alvokis homon,
        kaj detondigis la sep buklojn de lia
        kapo
        <fnt><bib>MT</bib>, <lok>&Jug; 16:19</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_u;&c_s;&c_y;&c_p;&c_l;&c_ja;&c_c;&c_mol;</trd>
  <trd lng="fr">endormir</trd>
  <trd lng="nl">in <ind>slaap</ind> doen</trd>
  <trd lng="ru">&c_u;&c_s;&c_y;&c_p;&c_i;&c_t;&c_mol;</trd>
</drv>

<drv mrk="dorm.en0igxi">
  <kap>en<tld/>i&gcirc;i</kap>
  <snc>
    <dif>
      Transiri en <tld/>an staton, fali en <tld/>on:
      <ekz>
        <klr>[la najtingalo]</klr> kantis kaj la imperiestro
        dol&ccirc;e en<tld/>i&gcirc;is
        <fnt><bib>Fab2</bib>, <lok>La najtingalo</lok></fnt>;
      </ekz>
      <ekz>
        mi ku&scirc;i&gcirc;as kaj en<tld/>i&gcirc;as,
        kaj mi veki&gcirc;as, &ccirc;ar la Eternulo min
        subtenas
        <fnt><bib>MT</bib>, <lok>&Psa; 3:5</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_z;&c_a;&c_s;&c_n;&c_u;&c_c;&c_mol;</trd>
  <trd lng="fr">s'<ind>endormir</ind></trd>
  <trdgrp lng="nl">
    <trd>in <ind>slaap</ind> vallen</trd>,
    <trd>inslapen</trd>
  </trdgrp>
  <trd lng="ru">&c_u;&c_s;&c_n;&c_u;&c_t;&c_mol;</trd>
</drv>

<drv mrk="dorm.for0i">
  <kap>for<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Perdi pro la <tld/>o:
      <ekz>
        for<tld/>i la okazon
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
  </snc>
  <adm>
    Koherigi kun tio, kio jam aperas sub &leftquot;for&rightquot;.
    <aut>MB</aut>
  </adm>
  <trd lng="be">&c_p;&c_r;&c_a;&c_s;&c_p;&c_a;&c_c;&c_mol; <klr>(&c_u;&c_p;&c_u;&c_s;&c_mol;&c_c;&c_ib;&c_c;&c_mol; &c_n;&c_je;&c_sh;&c_t;&c_a; &c_p;&c_r;&c_a;&c_z; &c_s;&c_o;&c_n;)</klr></trd>
  <trd lng="de">verschlafen</trd>
  <trd lng="fr">manquer<klr tip="ind"> (qc par inactivit&eacute;)</klr></trd>
  <trd lng="nl">missen<klr tip="ind"> (door z.te overslapen)</klr></trd>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_p;&c_a;&c_t;&c_mol; <klr>(&c_sh;&c_a;&c_n;&c_s; &c_i; &c_t;.&c_p;.)</klr></trd>
</drv>

<drv mrk="dorm.mal0i">
  <kap>mal<tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Esti en la aktiva, ne <tld/>a stato, ne <tld/>i:
      <ekz>
        li mal<tld/>is jam tri noktojn apud la malsana patro;
      </ekz>
      <ekz>
        ni mal<tld/>as en la tago, <tld/>as en la nokto kaj havas tiam
        niajn son&gcirc;ojn, sed kun arbo estas alia afero, arbo
        mal<tld/>as en la da&ubreve;ro de tri sezonoj, kaj nur en la komenco de
        la vintro &gcirc;i en<tld/>i&gcirc;as
        <fnt><bib>Fab4</bib>, <lok>Lasta son&gcirc;o de maljuna
        kverko</lok></fnt>;
      </ekz>
      <ekz>
        sed se diversaj homoj parolos diversmaniere, anka&ubreve; tiam
        mal<tld/>u, &ccirc;ar la sa&gcirc;o ordonas anta&ubreve;vidi prefere malbonon
        ol bonon
        <fnt><bib>Far1</bib>, <lok>&ccirc;ap.18</lok></fnt>.
      </ekz>
    </dif>
    <rim>
      PV, PAG kaj PIV ial atribuas al <ctl>mal<tld/>i</ctl>
      la sencon
      <ctl>sin deteni de <tld/>o dum la kutima <tld/>tempo</ctl>.
      Tio estas mallogika (&ccirc;ar rompas la simetrion inter
      <ctl><tld/>i</ctl> kaj <ctl>mal<tld/>i</ctl>), malutila
      (&ccirc;ar arbitre limigante la sencon de <ctl>mal<tld/>i</ctl>
      tio senigas nin je vorto por situacio kiel la
      prezentita en la Fabela ekzemplo) kaj simple malvera, kiel
      atestas la ekzemploj. <ctl>Mal<tld/>i</ctl>, samkiel
      <ctl>dormi</ctl>, oni povas je &ccirc;ia tempo, &ccirc;u kutima a&ubreve; ne.
    </rim>
  </snc>
  <trd lng="be">&c_n;&c_ja; <ind>&c_s;&c_p;&c_a;&c_c;&c_mol;</ind></trd>
  <trd lng="en">to be <ind>awake</ind></trd>
  <trd lng="es">estar <ind>despierto</ind></trd>
  <trd lng="de">wachen</trd>
  <trdgrp lng="fr">
    <trd>rester <ind>&eacute;veill&eacute;</ind></trd>,
    <trd>veiller<klr tip="ind"> (rester &eacute;veill&eacute;)</klr></trd>
  </trdgrp>
  <trd lng="nl">wakker zijn</trd>
  <trd lng="ru">&c_b;&c_o;&c_d;&c_r;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
</drv>

<drv mrk="dorm.tra0i">
  <kap>tra<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Pasigi <tld/>ante:
      <ekz>
        tra<tld/>i la nokton
        <fnt><bib>MT</bib>, <lok>&Jer; 14:8</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_r;&c_a;&c_s;&c_p;&c_a;&c_c;&c_mol; <klr>(&c_n;&c_je;&c_j;&c_k;&c_ib; &c_ch;&c_a;&c_s;)</klr></trd>
  <trdgrp lng="de">
    <trd>durchschlafen</trd>,
    <trd>verschlafen</trd>
  </trdgrp>
  <trd lng="nl">verslapen</trd>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_p;&c_a;&c_t;&c_mol; <klr>(&c_v;&c_s;&c_ju; &c_n;&c_o;&c_ch;&c_mol; &c_i; &c_t;.&c_p;.)</klr></trd>
</drv>

<drv mrk="dorm.sen0eco">
  <kap>sen<tld/>eco</kap>
  <uzo tip="fak">MED</uzo>
  <snc>
    <dif>
      Malsana stato, en kiu oni ne povas <tld/>i.
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_ja;&c_s;&c_s;&c_o;&c_n;&c_mol;&c_n;&c_ib;&c_c;&c_a;</trd>
  <trd lng="de">Schlaflosigkeit</trd>
  <trd lng="fr">insomnie</trd>
  <trd lng="nl">slapeloosheid</trd>
  <trd lng="ru">&c_b;&c_je;&c_s;&c_s;&c_o;&c_n;&c_n;&c_i;&c_c;&c_a;</trd>
</drv>

<drv mrk="dorm.0igilo">
  <kap><tld/>igilo</kap>
  <snc>
    <dif>
      En<tld/>iga <ref tip="super" cel="drog.0o.KEM">drogo</ref>:
      <ekz>
        mi uzas nek <tld/>igilojn nek aliajn psikmedikamentojn
        <fnt><aut>Claude Piron</aut>: <vrk>Kien esperanto?</vrk>
        <lok>Prelego kasede prezentita okaze de kunveno en
        Cully, Svislando, en septembro 1994.</lok>
        </fnt>;
      </ekz>
      <ekz>
        oficiale mi ne havas efektivan <tld/>igilon, kaj
        neoficiale... oni ne donas tiajn a&jcirc;ojn almoze e&ccirc; al
        blinduloj
        <fnt>
        <aut>Ero&scirc;enko</aut>: <vrk>7. La nesolvebla problemo</vrk>
        <lok>El vivo de &ccirc;uk&ccirc;oj: La trimova &scirc;akproblemo
        (Tria skizo el la &ccirc;uk&ccirc;a vivo).
        Aldono al la Esperanta Ligilo, dec. 1947.</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_n;&c_a;&c_t;&c_v;&c_o;&c_r;&c_n;&c_a;&c_je;</trd>
  <trd lng="en">soporific</trd>
  <trd lng="fr">somnif&egrave;re</trd>
  <trd lng="ru">&c_s;&c_n;&c_o;&c_t;&c_v;&c_o;&c_r;&c_n;&c_o;&c_je;</trd>
</drv>

<drv mrk="dorm.0ilo">
  <kap><tld/>ilo</kap>
  <uzo tip="stl">RAR</uzo>
  <snc>
    <dif>
      A&jcirc;o servanta por <tld/>i, kiu faras <tld/>on pli komforta:
      lito, matraco, kuseno, <tld/>osako ktp.
    </dif>
  </snc>
  <rim>
    Iuj (ekz-e PAG) donas al <tld/>ilo la sencon de <tld/>igilo,
    kaj oni indikas zamenhofan ekzemplon kiu &scirc;ajnas konfirmi
    tiun opinion:
    <ekz>
      Konscienco trankvila estas bona <tld/>ilo <fnt><bib>PrV</bib></fnt>.
    </ekz>
    Tamen tie estas miskompreno: la bona konscienco ne <em>ka&ubreve;zas</em>
    endormi&gcirc;on, kvankam &gcirc;i ja ebligas agrablan <tld/>on. La
    &leftquot;<tld/>ilo&rightquot;j ja estas &leftquot;iloj por dormado&rightquot;
    kaj la proverbo senpere anta&ubreve;anta la &jcirc;us cititan pruvas ke
    &gcirc;uste tion celis Zamenhof:
    <ekz>
      Konscienco senmakula estas <em>kuseno</em> plej mola.
    </ekz>
    <aut>Sergio Pokrovskij</aut>
  </rim>
  <trd lng="fr">&eacute;l&eacute;ment de <ind>literie</ind></trd>
  <trd lng="ru">&c_s;&c_p;&c_a;&c_l;&c_mol;&c_n;&c_a;&c_ja; &c_p;&c_r;&c_i;&c_n;&c_a;&c_d;&c_l;&c_je;&c_zh;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>
</drv>

<drv mrk="dorm.0omalsano">
  <kap><tld/>omalsano</kap>
  <uzo tip="fak">MED</uzo>
  <snc>
    <dif>
      Infekta malsano karakterizata de konstanta <tld/>emo.
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_o;&c_n;&c_n;&c_a;&c_ja; &c_h;&c_v;&c_a;&c_r;&c_o;&c_b;&c_a;</trd>
  <trd lng="de">Schlafkrankheit</trd>
  <trd lng="fr">maladie du sommeil</trd>
  <trd lng="nl">slaapziekte</trd>
  <trd lng="ru">&c_s;&c_o;&c_n;&c_n;&c_a;&c_ja; &c_b;&c_o;&c_l;&c_je;&c_z;&c_n;&c_mol;</trd>
</drv>
</art>
