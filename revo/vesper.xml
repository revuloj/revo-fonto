<drv mrk="vesper.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="vesper.0o.diurna">
    <uzo tip="fak">KAL</uzo>
    <dif>
      Parto de <ref tip="malprt" cel="diurn.0o">diurno</ref>,
      de la fino de hela <ref tip="vid" cel="tag.0o.luma">tago</ref>
      &gcirc;is la komenco de nokto:
      <ekz>
        <ind>anta&ubreve; <tld/>o ne estu fiera</ind>
        <fnt><bib>PrV</bib></fnt>;
        <trd lng="hu">nyugt&aacute;val dics&eacute;rd a napot</trd>
      </ekz>
      <ekz>
        atingi la <tld/>on <klr>(proksimi&gcirc;antan finon)</klr> de 
        sia vivo
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        <ind>la&ubreve;du tagon nur <tld/>e</ind>
        (<ref tip="vid" cel="fru">tro frue</ref>)
        <fnt><bib>PrV</bib></fnt>;
        <trd lng="hu">nyugt&aacute;val dics&eacute;rd a napot</trd>       
      </ekz>
      <ekz>
        matenas, <tld/>as, kaj tago malaperas
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <trd lng="hu">est</trd>   
  </snc>
  <snc mrk="vesper.0o.arangxo">
    <dif>
      Publika aran&gcirc;o okazigita en <tld/>o<sncref ref="vesper.0o.diurna"/>:
      <ekz>
        vidvino Layau provizis &ccirc;ambron, man&gcirc;on kaj veston al
        certaj neligitaj junaj virinoj kaj aran&gcirc;is diskretajn
        amuz<tld/>ojn
        <fnt>
          <aut>J. Collier, trad. R. Rossetti</aut>,
          <vrk>Sor&ccirc;ita mono</vrk>, <lok>Norda Prismo, 57:3</lok>.
        </fnt>.
      </ekz>
    </dif>
    <trd lng="hu">est&eacute;ly</trd>   
  </snc>
