<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>*</ofc>
      <rad>vesper</rad>/o
    </kap>

    <drv mrk="vesper.0o">
      <kap><ofc>*</ofc><tld/>o</kap>
      <snc mrk="vesper.0o.diurna">
        <uzo tip="fak">KAL</uzo>
	<dif>
	  Parto de <ref tip="malprt" cel="diurn.0o">diurno</ref>,
	  de la fino de hela <ref tip="vid" cel="tag.0o.luma">tago</ref>
	  &gcirc;is la komenco de nokto:
	  <ekz>
	    <ind>anta&ubreve; <tld/>o ne estu fiera</ind>
	    <fnt><bib>PrV</bib></fnt>;
        <trd lng="hu">nyugt&aacute;val dics&eacute;rd a napot</trd>
	  </ekz>
          <ekz>
	    atingi la <tld/>on <klr>(proksimi&gcirc;antan finon)</klr> de sia vivo
	    <fnt><bib>PrV</bib></fnt>;
	  </ekz>
          <ekz>
	    <ind>la&ubreve;du tagon nur <tld/>e</ind>
	    (<ref tip="sin" cel="fru">tro frue</ref>)
	    <fnt><bib>PrV</bib></fnt>;
        <trd lng="hu">nyugt&aacute;val dics&eacute;rd a napot</trd>	    
	  </ekz>
          <ekz>
	    matenas, <tld/>as, kaj tago malaperas
	    <fnt><bib>PrV</bib></fnt>.
	  </ekz>
	</dif>
    <trd lng="hu">est</trd>	
      </snc>
      <snc mrk="vesper.0o.arangxo">
	<dif>
	  Publika aran&gcirc;o okazigita en <tld/>o<sncref ref="vesper.0o.diurna"/>:
	  <ekz>
	    vidvino Layau provizis &ccirc;ambron, man&gcirc;on kaj veston al certaj
	    neligitaj junaj virinoj kaj aran&gcirc;is diskretajn amuz<tld/>ojn
	    <fnt>
	      <aut>John COLLIER, tr. Reto ROSSETTI</aut>:
	      <vrk>Sor&ccirc;ita mono</vrk>, <lok>Norda Prismo, 57:3</lok>.
	    </fnt>.
	  </ekz>
	</dif>
    <trd lng="hu">est&eacute;ly</trd>	
      </snc>
      <trd lng="be">&c_v;&c_je;&c_ch;&c_a;&c_r;</trd>
      <trd lng="bg">&c_v;&c_je;&c_ch;&c_a;&c_r;</trd>
      <trd lng="de">Abend</trd>
      <trd lng="en">evening</trd>
      <trdgrp lng="fr">
	<trd>soir</trd>,
	<trd>soir&eacute;e</trd>
      </trdgrp>
      <trdgrp lng="la">
	<trd>vespera</trd>,
	<trd>vesper</trd>
      </trdgrp>
      <trd lng="nl">avond</trd>
      <trdgrp lng="pt">
	<trd>tarde</trd>,
	<trd>tardezinha</trd>
      </trdgrp>
      <trd lng="ru">&c_v;&c_je;&c_ch;&c_je;&c_r;</trd>
      <trd lng="sv">kv&auml;ll</trd>
      <trd lng="vo">vendel</trd>
      <trdgrp lng="zh">
	<trd>&#26202;&#19978;<klr> [w&#462;nshang]</klr></trd>,
	<trd>&#22805;<klr> [x&#299;]</klr></trd>
      </trdgrp>
    </drv>

    <drv mrk="vesper.antaux0o">
      <kap>anta&ubreve;<tld/>o</kap>
      <snc mrk="vesper.antaux0o.de_la_antauxa_tago">
	<dif>
	  <tld lit="V"/>o de la 
	  <ref cel="tag.antaux0o">anta&ubreve;tago</ref>:
	  <ekz>
	    en la anta&ubreve;<tld/>o de nia renkonti&gcirc;o, estis malfacile 
	    por mi endormi&gcirc;i en hotelo en Seulo
	    <fnt>
	      <aut>NISHINO Rumiko trad. pluraj</aut>,
	      <vrk>Konsolvirinoj de Japana Imperia Armeo</vrk>
	      <lok><url ref="http://village.infoweb.ne.jp/~serpento/vk/ianfu.htm"
		  >http://village.infoweb.ne.jp/~serpento/vk/ianfu.htm</url></lok>
	    </fnt>;
	  </ekz><ekz>
	    dankon al vi, ke vi kompatis nin kaj ne forgesis nin en la 
	    anta&ubreve;<tld/>o de la Dia festotago
	    <fnt>
	      <aut>Ivan Vazov trad. Ivan Kestanoff</aut>,
	      <vrk>Kristnaska donaco</vrk>,
	      <lok><url ref="http://www.tekstoj.nl/lm/lm22-3/donaco.html"
		  >http://www.tekstoj.nl/lm/lm22-3/donaco.html</url></lok>
	    </fnt>.
	  </ekz>
	</dif>
	<rim>
	  Trovi&gcirc;as en <fnt><bib>PIV1</bib></fnt> pli vasta senco, nome
	  <ctl>la hiera&ubreve;o de difinita tago</ctl>, sed la donita 
	  ekzemplo 
	  <ekz>
	    en la anta&ubreve;<tld/>o de la 14a tago de la monato
	    Nisen <klr>(Nisan?)</klr><fnt>X</fnt>
	  </ekz>
	  estas des malpli konvinka, ke &gcirc;i ne estas retrovebla en
	  la biblia teksto, kie male abundas esprimoj de la tipo
	  <ekz>
	    en la dek-kvara tago de la monato <klr>(Nisan)</klr>, 
	    &ccirc;irka&ubreve; la <tld/>o
	    <fnt><bib>MT</bib>, <lok>&Lev; 23:5</lok></fnt>
	  </ekz>,
	  kiuj referencas al la anta&ubreve;<tld/>o de la dek-kvina de
	  Nisan, t.e. Pasko.
	</rim>
	<trdgrp lng="fr">
	  <trd>soir de la veille</trd>,
	  <trd>veille au soir</trd>,
	  <trd>veille<klr tip="ind"> (soir de la veille)</klr></trd>,
	  <trd>r&eacute;veillon<klr tip="ind"> (soir de la veille)</klr></trd>
	</trdgrp>
	<adm>
	  La franca traduko "r&eacute;veillon" estas kritikebla. Ja laux
	  vortaroj temas pri vespermangxo prenita dum antauxvespero de
	  iuj festoj, sed sxajnas al mi, ke oni volonte vastigas gxin por
	  signifi la vesperon mem. <aut>MB</aut>
	</adm>
    <trd lng="hu">el&odblac;est</trd>	
	<trdgrp lng="ru">
	  <trd>&c_k;&c_a;&c_n;&c_u;&c_n;</trd>,
	  <trd>&c_n;&c_a;&c_v;&c_je;&c_ch;&c_je;&c_r;&c_i;&c_je;</trd>
	</trdgrp>
      </snc>
      <snc mrk="vesper.antaux0o.fino_de_posttagmezo">
	<dif>
	  Momento tuj anta&ubreve;anta la <tld/>on, fino de la
	  <ref tip="malprt" cel="mez.posttag0o">tagmezo</ref>:
	  <ekz>
	    Pilato rigardis for, kun grimaco de abomeno kontemplante la parton 
	    de la urbo ku&scirc;antan &ccirc;e liaj piedoj kaj estingi&gcirc;antan
	    en la anta&ubreve;<tld/>o
	    <fnt><bib>MkM</bib>, <lok>&ccirc;apitro 25a</lok></fnt>.
	  </ekz>
	</dif>
	<trdgrp lng="fr">
	  <trd>fin d'apr&egrave;s-midi</trd>,
	  <trd>avant-soir&eacute;e</trd>
	</trdgrp>
    <trd lng="hu">koraest</trd>	
	<trd lng="ru">&c_p;&c_r;&c_je;&c_d;&c_v;&c_je;&c_ch;&c_je;&c_r;&c_i;&c_je;</trd>
      </snc>
    </drv>
  </art>
