<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: hiperb.xml,v 1.22 2020/02/22 19:10:33 revo Exp $">
<kap>
  <rad>hiperbol</rad>/o <fnt>Z</fnt>
</kap>
<drv mrk="hiperb.0o">
  <kap><tld/>o</kap>
  <snc mrk="hiperb.0o.linio">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>MatTerm</bib><lok>p. 33</lok></fnt>
    <dif>
      <ref tip="super" cel="konik.0o">Koniko</ref> kun discentreco
      pli granda ol unu:
      <ekz>
        <tld/>o havas du fokusojn kaj la diferenco inter la distancoj de
        &ccirc;iu punkto de la <tld/>o al &gcirc;iaj fokusoj estas konstanta;
      </ekz>
      <ekz>
        <tld/>o estas intersekco de cirkla konuso kun ebeno paralela al
        la konusa akso;
      </ekz>
      <ekz>
        la kartezia ekvacio de <tld/>o estas de la tipo
        <frm am="(x//a)^2-(y//b)^2=1"
        >(<k>x</k>/<k>a</k>)<sup>2</sup>-(<k>y</k>/<k>b</k>)<sup>2</sup>
        = 1</frm>.
      </ekz>
    </dif>
    <bld lok="../bld/k_hiperbolo.svg" tip="svg" alt="400" lrg="400">
      <tld/>o
    </bld>
    <trd lng="be">&c_g;&c_ib;&c_p;&c_e;&c_r;&c_b;&c_a;&c_l;&c_a; <klr>(&c_g;&c_je;&c_a;&c_m;&c_e;&c_t;&c_r;&c_y;&c_ch;&c_n;&c_a;&c_ja;
    &c_f;&c_ib;&c_g;&c_u;&c_r;&c_a;)</klr></trd>
    <trd lng="es">hip&eacute;rbola</trd>
    <trd lng="hu">hiperbola</trd>
  </snc>
  <snc mrk="hiperb.0o.troigo">
    <uzo tip="fak">BELE</uzo>
    <dif>
      <ref tip="dif" cel="tro.0igo.hiperbolo">Troigo</ref>:
      <ekz>
        <ctl>li estas morte ebria</ctl> estas <tld/>o.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="superl">superlativo</ref>.
    </refgrp>
    <trdgrp lng="be">
      <trd>&c_g;&c_ib;&c_p;&c_e;&c_r;&c_b;&c_a;&c_l;&c_a; <klr>(&c_t;&c_r;&c_o;&c_p;)</klr></trd>,
      <trd>&c_p;&c_je;&c_r;&c_a;&c_b;&c_o;&c_l;&c_mol;&c_sh;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>
    </trdgrp>
    <trd lng="es">hip&eacute;rbole</trd>
    <trdgrp lng="hu">
      <trd>t&uacute;lz&aacute;s</trd>,
      <trd>hiperbola</trd></trdgrp>
    <trd lng="ru">&c_p;&c_r;&c_je;&c_u;&c_v;&c_je;&c_l;&c_i;&c_ch;&c_je;&c_n;&c_i;&c_je;</trd>
  </snc>
  <trd lng="cs">hyperbola</trd>
  <trd lng="de">Hyperbel</trd>
  <trd lng="el">&ypsilon;&pi;&epsilon;&rho;&beta;&omikron;&lambda;&eta_ton;</trd>
  <trd lng="en">hyperbola</trd>
  <trd lng="fr">hyperbole</trd>
  <trd lng="it">iperbole</trd>
  <trd lng="nl">hyperbool</trd>
  <trd lng="pl">hiperbola</trd>
  <trd lng="pt">hip&eacute;rbole</trd>
  <trd lng="ru">&c_g;&c_i;&c_p;&c_je;&c_r;&c_b;&c_o;&c_l;&c_a;</trd>
  <trd lng="sk">hyperbola</trd>
</drv>
</art>
