<vortaro>
<art mrk="$Id: miragx.xml,v 1.24 2025/05/06 16:36:36 revo Exp $">
<kap>
  <ofc>9</ofc><rad>mira&gcirc;</rad>/o <fnt><bib>PVEF</bib></fnt>
</kap>
<drv mrk="miragx.0o">
  <kap><ofc>9</ofc><tld/>o</kap>
  <snc mrk="miragx.0o.OPT">
    <uzo tip="fak">FOT</uzo>
    <dif>
      Optika <ref tip="super" cel="aper.0ajxo">apera&jcirc;o</ref> okazanta en varmaj landoj kaj
      konsistanta en tio,
      ke tre malproksimaj objektoj vidi&gcirc;as kiel proksimaj, sed
      renversitaj, kvaza&ubreve; spegulataj en akvo:
      <ekz>
        la sopiritaj venko kaj trankvilo estis jam pli never&scirc;ajna ol la <tld/>o sur la
        somera horizonto
        <fnt>
          <bib>LGA</bib>
          <lok>IV.</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="fatamo.0o">fatamorgano</ref>
    <trdgrp lng="de">
      <trd>Luftspiegelung</trd>
    </trdgrp>
    <trd lng="hu">d&eacute;lib&aacute;b</trd>
  </snc>
  <snc mrk="miragx.0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Erariga alloga <ref tip="super" cel="iluzi.0o.KOMUNE">iluzio</ref>:
      <ekz>
        pensu pri la mondo kiel pri veziko; rigardu &gcirc;in kiel <tld/>on
        <fnt>
          <aut>trad. T. T. Anuruddha</aut>,
          <vrk>La Vojo al Nirvano a&ubreve; la Dhammapado, 13:170</vrk>,
          <lok>B&#7891;-T&aacute;t-Csoma-Instituto por Budhologio, 1973</lok>
        </fnt>.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>Trugbild</trd>,
      <trd>Wahngebilde</trd>,
      <trd>T&auml;uschung</trd>
    </trdgrp>
  </snc>
  <trd lng="be">&c_m;&c_ib;&c_r;&c_a;&c_zh;</trd>
  <trd lng="ca">miratge</trd>
  <trd lng="de">Fata Morgana</trd>
  <trdgrp lng="en">
    <trd>mirage</trd>
  </trdgrp>
  <trd lng="es">espejismo</trd>
  <trd lng="fr">mirage</trd>
  <trdgrp lng="hu">
    <trd>d&eacute;lib&aacute;b</trd>,
    <trd>&aacute;br&aacute;ndk&eacute;p</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#34563;&#27671;&#27004;  <pr>&#12375;&#12435;&#12365;&#12429;&#12358;</pr></trd>,
    <trd>&#24187;&#24433;  <pr>&#12370;&#12435;&#12360;&#12356;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>luchtspiegeling</trd>,
    <trd>fatamorgana</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>mira&zdot;</trd>,
    <trd>z&lstroke;udzenie optyczne</trd>
  </trdgrp>
  <trdgrp lng="ro">
    <trd>miraj</trd>,
    <trd>iluzie optic&abreve;</trd>
  </trdgrp>
  <trd lng="ru">&c_m;&c_i;&c_r;&c_a;&c_zh;</trd>
  <trd lng="uk">&c_m;&c_ib;&c_r;&c_a;&c_zh;</trd>
  <trdgrp lng="zh">
    <trd>&#28023;&#24066;&#34563;&#27004; <pr>h&#462;ish&igrave;sh&egrave;nl&oacute;u</pr></trd>,
    <trd>&#28023;&#24066;&#34563;&#27155; <pr>h&#462;ish&igrave;sh&egrave;nl&oacute;u</pr></trd>,
    <trd>&#24187;&#24433; <pr>hu&agrave;ny&#464;ng</pr></trd>,
    <trd>&#24187;&#26223; <pr>hu&agrave;nj&#464;ng</pr></trd>,
    <trd>&#34563;&#26223; <pr>sh&egrave;nj&#464;ng</pr></trd>
  </trdgrp>
</drv>
</art>
