<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>&scirc;pin</rad>/i
</kap>
<drv mrk="sxpin.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="sxpin.0i.TEKS">
    <uzo tip="fak">TEKS</uzo>
    <dif>
      Kuntordi kanabon, linon a&ubreve; alian fibra&jcirc;on, por formi fadenojn:
      <ekz>
        malri&ccirc;a kamparano sidis &ccirc;e la fajrujo <klr>...</klr> kaj lia
        edzino sidis kaj <tld/>is
        <fnt><bib>ElektFab</bib>, <lok>Fingreto</lok></fnt>.
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        la kato komencis <tld/>i
        <klr>(kontente murmuri bruante simile al rad<tld/>ilo)</klr>
        <fnt><bib>Fab2</bib>, <lok>malbela anasido</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_p;&c_r;&c_a;&c_s;&c_mol;&c_c;&c_ib;</trd>,
      <trd>&c_s;&c_u;&c_k;&c_a;&c_c;&c_mol;</trd>
    </trdgrp>
    <trd lng="fr">filer<klr tip="amb"> (faire un fil)</klr></trd>
    <trd lng="hu">fon</trd>
    <trdgrp lng="ru">
      <trd>&c_p;&c_r;&c_ja;&c_s;&c_t;&c_mol;</trd>,
      <trd>&c_s;&c_u;&c_ch;&c_i;&c_t;&c_mol;</trd>
    </trdgrp>
  </snc>
  <snc mrk="sxpin.0i.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Zorge kaj malrapide kombini:
      <ekz>
        planojn li <tld/>is en sia kapo
        <fnt><bib>Far2</bib>, <lok>&ccirc;apitro 6a</lok></fnt>;
      </ekz>
      <ekz>
        <tld/>adi aerajn fantaziojn;
      </ekz>
      <ekz>
        &scirc;ia bu&scirc;o <tld/>is la longajn fadenojn de fantaziaj rakontoj
        <fnt><bib>Marta</bib></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_p;&c_l;&c_je;&c_s;&c_mol;&c_c;&c_ib;</trd>,
      <trd>&c_s;&c_p;&c_l;&c_ja;&c_t;&c_a;&c_c;&c_mol;</trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>sz&odblac;<klr tip="amb"> (pl. terveket)</klr></trd>,
      <trd>k&ouml;lt<klr tip="amb"> (pl. legend&aacute;kat)</klr></trd>
    </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_p;&c_l;&c_je;&c_s;&c_t;&c_i;</trd>,
      <trd>&c_s;&c_p;&c_l;&c_je;&c_t;&c_a;&c_t;&c_mol;</trd>
    </trdgrp>
  </snc>
  <refgrp tip="vid">
    <ref cel="plekt.0i">plekti</ref>,
    <ref cel="teks.0i">teksi</ref>,
    <ref cel="trik.0i">triki</ref>
  </refgrp>
  <trd lng="de">spinnen</trd>
  <trd lng="en">spin</trd>
  <trd lng="nl">spinnen</trd>
  <trd lng="pt">fiar</trd>
</drv>

<drv mrk="sxpin.0ilo">
  <kap><tld/>ilo</kap>
  <snc mrk="sxpin.0ilo.TEKS">
    <uzo tip="fak">TEKS</uzo>
    <dif>
      &Ccirc;ia aparato por &scirc;pini:
      <ekz>
        murmuri kiel <tld/>ilo
        <fnt><bib>ElektFab</bib>, <lok>la bremenaj muzikistoj</lok></fnt>.
      </ekz>
    </dif>
  </snc>
</drv>

<drv mrk="sxpin.rad0ilo">
  <kap>rad<tld/>ilo</kap>
  <snc mrk="sxpin.rad0ilo.TEKS">
    <uzo tip="fak">TEKS</uzo>
    <dif>
      <ref tip="super" cel="sxpin.0ilo.TEKS">&Scirc;pinilo</ref> el rado, kiun
      oni movas per pedalo kaj kiu servas por tordi kaj fadenigi fibrojn:
      <ekz>
        granda kiel rad<tld/>ilo
        <fnt><bib>Fab2</bib>, <lok>ne&gcirc;a re&gcirc;ino, kvara rakonto, princo kaj
        re&gcirc;idino</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_l;&c_a;&c_w;&c_r;&c_o;&c_t;</trd>
  <trd lng="fr">rouet</trd>
  <trd lng="hu">rokka</trd>
  <trd lng="nl">spinnewiel</trd>
  <trdgrp lng="pt">
    <trd>roca</trd>,
    <trd>fuso</trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_r;&c_ja;&c_l;&c_k;&c_a;</trd>
</drv>

<drv mrk="sxpin.0turnilo">
  <kap><tld/>turnilo</kap>
  <snc mrk="sxpin.0turnilo.TEKS">
    <uzo tip="fak">TEKS</uzo>
    <dif>
      <ref tip="super" cel="sxpin.0ilo.TEKS">&Scirc;pinilo</ref> el bastoneto,       kies unu ekstremo tenas implikon da fibroj de      kanabo, lino, silko a&ubreve; simila, kiujn oni iom post iom tiras kaj torde fadenigas:
      <ekz>
        &scirc;iaj fingroj tenas la <tld/>turnilon
        <fnt><bib>MT</bib>, <lok>&Sen; 31:19</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_v;&c_je;&c_r;&c_a;&c_c;&c_ja;&c_n;&c_o;</trd>,
    <trd>&c_r;&c_u;&c_ch;&c_a;&c_j;&c_k;&c_a;</trd>
  </trdgrp>
  <trd lng="fr">quenouille</trd>
  <trd lng="hu">guzsaly</trd>
  <trd lng="nl">spoel</trd>
  <trd lng="ru">&c_v;&c_je;&c_r;&c_je;&c_t;&c_je;&c_n;&c_o;</trd>
</drv>

<drv mrk="sxpin.cxirkaux0i">
  <kap>&ccirc;irka&ubreve;<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      <tld lit="&Scirc;"/>i ion &ccirc;irka&ubreve;:
      <ekz>
        anasirantaj araneoj &ccirc;irka&ubreve;<tld/>is iliajn piedojn
        per miljaraj teksa&jcirc;oj
        <fnt><bib>Fab4</bib>, <lok>knabino kiu pa&scirc;is sur panon</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">entortiller</trd>
</drv>

<drv mrk="sxpin.suker0ajxo">
  <kap>suker<tld/>a&jcirc;o</kap>
  <snc mrk="sxpin.suker0ajxo.KUI">
    <uzo tip="fak">KUI</uzo>
    <dif>
      Dol&ccirc;a&jcirc;o el sukerfadeno volvita &ccirc;irka&ubreve; bastoneto:
      <ekz>
        multe vendi&gcirc;is suker<tld/>a&jcirc;oj kaj balonoj
        <fnt><bib>HomojMan&gcirc;antaj</bib>, <lok>&leftquot;signifoplena malsato de la
        cirka trupo&rightquot;, p. 88a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">barbe-&agrave;-papa</trd>
</drv>
</art>
