<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <rad>anatem</rad>/o
      <fnt>Z</fnt>
    </kap>

    <drv mrk="anatem.0o">
      <kap><tld/>o</kap>
      <snc mrk="anatem.0o.tabuo">
	<uzo tip="fak">BIB</uzo>
	<dif>
	  En la <ref cel="bibli.HebreaB0o">Hebrea Biblio</ref>,
	  <ref tip="super" cel="tabu.0o.REL">tabuo</ref>,
	  oferota&jcirc;o:
	  <ekz>
	    sed vi gardu vin kontra&ubreve; la <tld/>ita&jcirc;o, por ke vi
	    ne <tld/>i&gcirc;u, se vi prenos ion el la <tld/>ita&jcirc;o,
	    kaj por ke vi ne faligu <tld/>on sur la tendaron
	    de Izrael kaj ne malfeli&ccirc;igu &gcirc;in
	    <fnt><bib>MT</bib>, <lok>&Jos; 6:18.</lok></fnt>.
	  </ekz>
	</dif>
	<trd lng="ru">&c_z;&c_a;&c_k;&c_l;&c_ja;&c_t;&c_i;&c_je;</trd>
      </snc>
      <snc mrk="anatem.0o.ekskomuniko">
	<uzo tip="fak">KRI</uzo>
	<dif>
	  Solena kaj definitiva eksigo a&ubreve; malpermeso, akompanata per
	  <ref tip="prt" cel="ekskom.0i">ekskomuniko</ref>, fare de
	  eklezia estraro.
	</dif>
	<trd lng="ru">&c_a;&c_n;&c_a;&c_f;&c_je;&c_m;&c_a;</trd>
      </snc>
      <snc mrk="anatem.0o.malbeno">
	<uzo tip="stl">KOMUNE</uzo>
	<dif>
	  Solena malbeno a&ubreve; esprimo de abomeno.
	</dif>
	<trdgrp lng="ru">
	  <trd>&c_a;&c_n;&c_a;&c_f;&c_je;&c_m;&c_a;</trd>,
	  <trd>&c_p;&c_r;&c_o;&c_k;&c_l;&c_ja;&c_t;&c_i;&c_je;</trd>
	</trdgrp>
      </snc>
      <trdgrp lng="de">
	<trd>Bann</trd>,
	<trd>Kirchenbann</trd>
      </trdgrp>
      <trd lng="en">anathema</trd>
      <trd lng="fr">anath&egrave;me</trd>
      <trd lng="nl">banvloek</trd>
      <trd lng="sk">kliatba</trd>
    </drv>

    <drv mrk="anatem.0i">
      <kap><tld/>i</kap>
      <gra><vspec>tr</vspec></gra>
      <snc>
	<dif>
	  Deklari <tld/>on kontra&ubreve; homon a&ubreve; opinion.
	</dif>
      </snc>
      <trdgrp lng="de">
	<trd><klr>mit dem </klr>Bann belegen</trd>,
	<trd><klr>mit dem </klr>Kirchenbann belegen</trd>,
	<trd>verfluchen</trd>
      </trdgrp>
      <trd lng="en">anathematize</trd>
      <trd lng="fr">jeter l'<ind>anath&egrave;me</ind> (&agrave;, sur)</trd>
      <trd lng="nl">in de <ind>ban</ind> slaan</trd>
      <trdgrp lng="ru">
	<trd>&c_a;&c_n;&c_a;&c_f;&c_je;&c_m;&c_a;&c_t;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>,
	<trd>&c_p;&c_r;&c_je;&c_d;&c_a;&c_v;&c_a;&c_t;&c_mol; &c_a;&c_n;&c_a;&c_f;&c_je;&c_m;&c_je;</trd>,
	<trd>&c_p;&c_r;&c_o;&c_k;&c_l;&c_i;&c_n;&c_a;&c_t;&c_mol;</trd>
      </trdgrp>
      <trd lng="sk">da&tcaron; do <ind>kliatby</ind></trd>
    </drv>
  </art>
