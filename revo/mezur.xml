  <trdgrp lng="uk">
    <trd>&#x43D;&c_a;&c_d;&#x43C;&c_ib;&c_r;&#x43D;&c_i;&c_j;</trd>,
    <trd>&#x43D;&c_je;&#x43F;&#x43E;&#x43C;&c_ib;&c_r;&#x43D;&c_i;&c_j;</trd>
  </trdgrp>
</drv>

