      <ekz>
        kiam li repudiis sian edzinon, li komencis drinki sen<tld/>e
        <fnt><bib>UrdHadda</bib>, <lok>p. 18</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
