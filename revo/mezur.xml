        amo super<tld/>a ne estas plezura
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        kiam li repudiis sian edzinon, li komencis drinki sen<tld/>e
        <fnt><bib>UrdHadda</bib>, <lok>p. 18</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="br">
    <trd>divuzul</trd>,
    <trd>hep <ind>muzul</ind></trd>,    
    <trd>dreist <ind>muzul</ind></trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>bez m&iacute;ry <klr>(adj.)</klr></trd>,
    <trd>nezm&ecaron;rn&yacute;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>d&eacute;mesur&eacute;</trd>,
    <trd>disproportionn&eacute;<klr tip="ind"> (excessif)</klr></trd>,
    <trd>excessif</trd>,
    <trd>immod&eacute;r&eacute;</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>m&eacute;rt&eacute;ktelen</trd>,
    <trd>irdatlan</trd>,
    <trd>m&eacute;ret feletti</trd>
  </trdgrp>
  <trd lng="nl">uitermate</trd>
  <trdgrp lng="pl">
    <trd>niezmierzony</trd>,
    <trd>niezmierny</trd>,
    <trd>nieogarniony</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_b;&c_je;&c_z;&c_m;&c_je;&c_r;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_s;&c_v;&c_je;&c_r;&c_h; &c_m;&c_je;&c_r;&c_y;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>nesmierny</trd>,
    <trd>nezmerate&lcaron;n&yacute;</trd>,
    <trd>obrovsky</trd>
  </trdgrp>
</drv>

<drv mrk="mezur.diraka0o">
