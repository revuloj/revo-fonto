<vortaro>
<art mrk="$Id$">
<kap>
  <rad>matric</rad>/o
  <fnt>Z</fnt>
</kap>
<drv mrk="matric.0o">
  <kap><tld/>o</kap>
  <snc mrk="matric.0o.TEK">
    <uzo tip="fak">TEK</uzo>
    <dif>
      Reliefa <ref tip="super" cel="model.0o.KOMUNE">modelo</ref>: 
      bulo, peco a&ubreve; muldilo, per kiu oni povas
      fabriki similajn pecojn per fandado, frapo, giso, premo:
      <ekz>
        monerojn oni frapas per <tld/>o.
      </ekz>
    </dif>
    <subsnc mrk="matric.0o.TIP">
      <uzo tip="fak">TIP</uzo>
      <dif>
        Formo por gisi litertipojn.
      </dif>
      <trd lng="hu">anyaminta</trd>
    </subsnc>
    <subsnc mrk="matric.0o.kartona">
      <dif>
        Kartona formo preme reproduktita de komposta&jcirc;o kaj per kiu oni
        povas gisi stereotipojn.
      </dif>
      <trd lng="hu">matrica</trd>
    </subsnc>
    <trd lng="hu">matrica <klr tip="amb">(alak&iacute;t&oacute;szersz&aacute;m)</klr></trd>
    <trd lng="nl">matrijs</trd>
    <trd lng="pt">matriz</trd>
  </snc>
  <snc>
    <uzo tip="klr">(en galvanoplastiko)</uzo>
    <dif>
      Formo, kiu kovri&gcirc;as per maldika tavolo de metalo.
    </dif>
    <refgrp tip="vid">
      <ref cel="patric.0o">patrico</ref>
    </refgrp>
    <trd lng="hu">anyaforma</trd>
    <trd lng="nl">matrijs</trd>
    <trd lng="pt">matriz</trd>
  </snc>
  <snc mrk="matric.0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>PIV1</bib></fnt>
    <dif>
      <klr>(kun <frm><k>n</k></frm> horizontaloj kaj
      <frm><k>p</k></frm> vertikaloj)</klr>
    </dif>
    <ref tip="dif" cel="matric.n_p0o">(n,p)-<tld/>o.</ref>
    <trd lng="de">Matrix</trd>
    <trd lng="en">matrix</trd>
    <trd lng="fr">matrice</trd>
    <trd lng="hu">m&aacute;trix</trd>
    <trd lng="nl">matrix</trd>
    <trd lng="pl">macierz</trd>
    <trd lng="pt">matriz</trd>
    <trd lng="ru">&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a;</trd>
  </snc>
  <snc mrk="matric.0o.KOMP">
    <uzo tip="fak">KOMP</uzo>
    <dif>
      Dudimensia <ref tip="super" cel="tabel.0o.KOMP">tabelo</ref>.
    </dif>
    <ref tip="vid" cel="vektor.0o.KOMP">vektoro</ref>
    <trd lng="nl">matrix</trd>
    <trd lng="pt">matriz</trd>
  </snc>
  <trd lng="be">&c_m;&c_a;&c_t;&c_r;&c_y;&c_c;&c_a;</trd>
  <trd lng="en">matrix</trd>
  <trd lng="hu">m&aacute;trix</trd>
  <trd lng="ru">&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a;</trd>
  <refgrp tip="vid">
    Ne konfuzu kun:
    <ref cel="uter.0o">utero</ref>.
  </refgrp>
</drv>

<drv mrk="matric.n_p0o">
  <kap>(n,p)-<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(super <ref cel="komut.0eca.ringo">komuteca</ref>
      <ref cel="korp.0o.MAT">korpo</ref> <frm><g>K</g></frm>)</klr>
      <ref tip="super" cel="bild.0igo.MAT">Bildigo</ref> de
      <frm><g>I</g>&#215;<g>J</g></frm> al <frm><g>K</g></frm>, kie
      <frm><g>I</g> = {1, 2,..., <k>n</k>}</frm> kaj
      <frm><g>J</g>={1, 2,..., <k>p</k>}</frm>:
      <ekz>
        <tld/>on <frm>A</frm> oni kutime signas kiel
        <ref tip="super" cel="famili.0o.bildigo">familion</ref>, t.e. per
        skriba&jcirc;o
        <frm>(A<sub><k>i</k><k>j</k></sub>)<sub>(<k>i</k>,<k>j</k>)&#8712;<g>I</g>&#215;<g>J</g></sub></frm>,
        kie <frm>A<sub><k>i</k><k>j</k></sub></frm> signas la bildon de
        <frm>(<k>i</k>,<k>j</k>)</frm> per <frm>A</frm> kaj estas nomata
        elemento (a&ubreve; koeficiento) de <frm>A</frm>
        kun indico <frm>(<k>i</k>,<k>j</k>)</frm>;
      </ekz>
      <ekz>
        la nombrojn da horizontaloj kaj vertikaloj de
        <frm>(<k>n</k>,<k>p</k>)</frm>-<tld/>o oni nomas
        ties dimensioj kaj signas ilin per skriba&jcirc;o de la tipo
        <frm>(<k>n</k>,<k>p</k>)</frm> a&ubreve; <frm><k>n</k>&#215;<k>p</k></frm>;
      </ekz>
      <ekz>
        eblas prezenti al si <frm>(<k>n</k>,<k>p</k>)</frm>-<tld/>on
        <frm>A</frm> kiel rektangulan tabelon, &ccirc;e la interkruci&gcirc;o
        de kies <frm><k>i</k></frm>-a horizontalo kaj <frm><k>j</k></frm>-a
        vertikalo staras la elemento
        <frm>A<sub><k>i</k><k>j</k></sub></frm>.
      </ekz>
    </dif>
    <rim>
      Multaj fakaj terminoj rilatantaj al <tld/>oj bazi&gcirc;as sur la
      &ccirc;i-supre menciita tabela metaforo.
    </rim>
    <refgrp tip="sin">
      Malpli fakece:
      <ref cel="matric.0o.MAT"><tld/>o</ref> kun n horizontaloj
      kaj p vertikaloj;
    </refgrp>
    <refgrp tip="vid">
      Partoj de matrico:
      <ref cel="horizo1.0o.de_matrico">horizontalo</ref>,
      <ref cel="vertik.0o.de_matrico">vertikalo</ref>,
      <ref cel="diagon.0o.de_matrico">diagonalo</ref>,
      <ref cel="matric.sub0o">sub<tld/>o</ref>;
      <ref cel="elemen.0o.matrico">elemento</ref>,
      <ref cel="indic.0o.familio">indico de elemento</ref>,
      <ref cel="koefic.0o.matrico">koeficiento</ref>,
      <ref cel="term.0o.matrico">termo</ref>;
      atributoj de matrico:
      <ref cel="dimens.0o.matrico">dimensioj</ref>,
      <ref cel="ajgen.0o">ajgeno</ref>,
      <ref cel="rang.0o.matrico">rango</ref>,
      <ref cel="spur.0o.matrico">spuro</ref>,
      <ref cel="determ.0anto.matrico">determinanto</ref>,
      <ref cel="minor.0o">minoro</ref>,
      <ref cel="kofakt.0o">kofaktoro</ref>;
      rimarkindaj ecoj de matrico:
      <ref cel="kvadra1.0a.matrico">kvadrata</ref>,
      <ref cel="diagon.0a.matrico">diagonala</ref>,
      <ref cel="diagon.0igebla.matrico">diagonaligebla</ref>,
      <ref cel="angul.tri0a.matrico">triangula</ref>,
      <ref cel="simetr.0a.matrico">simetria</ref>,
      <ref cel="hermit.h0a.matrico">hermita</ref>,
      <ref cel="regul.0a.matrico">regula</ref>;
      operacioj super matricoj:
      <ref cel="adici.matrica0o"><tld/>a adicio</ref>,
      <ref cel="multip.matrica0o"><tld/>a multipliko</ref>,
      <ref cel="multip.0o.de_matrico_per_skalaro">multipliko de <tld/>o
      per skalaro</ref>,
      <ref cel="transp.0o">transpono</ref>;
    </refgrp>
    <refgrp tip="sub">
      Specifaj matricoj:
      <ref cel="matric.unuo0o">unuo<tld/>o</ref>,
      <ref cel="matric.nul0o">nul<tld/>o</ref>,
      <ref cel="matric.0o.homomorfio"><tld/>o de homomorfio</ref>,
      <ref cel="matric.jakobia0o">jakobia <tld/>o de bildigo</ref>,
      <ref cel="horizo1.0o.matrico">horizontalo</ref>,
      <ref cel="vertik.0o.matrico">vertikalo</ref>.
    </refgrp>
  </snc>
  <bld lok="../bld/matric.gif">
    (n,p)-<tld/>o
  </bld>
  <trd lng="de">(n,p)-<ind>Matrix</ind></trd>
  <trd lng="en">n-by-p <ind>matrix</ind></trd>
  <trd lng="fr">matrice n&#215;p</trd>
  <trd lng="hu">n&#215;p m&eacute;ret&udblac; <ind>m&aacute;trix</ind></trd>
  <trd lng="pl">macierz n&#215;p</trd>
  <trd lng="ru">&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a; &c_r;&c_a;&c_z;&c_m;&c_je;&c_r;&c_a; n&#215;p</trd>
</drv>

<drv mrk="matric.nul0o">
  <kap>nul<tld/>o<fnt><bib>MatVort</bib></fnt>, <tld/>a nulo</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="matric.n_p0o">(n,p)-<tld lit="M"/>o</ref>, kies
      &ccirc;iuj elementoj estas nulaj:
      <ekz>
        nul<tld/>o estas <ref cel="nul0.0o.neuxtra">nulo</ref> rilate al la
        <tld/>a adicio.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Nullmatrix</trd>
  <trd lng="en">null <ind>matrix</ind></trd>
  <trd lng="fr">matrice nulle</trd>
  <trd lng="hu">nullm&aacute;trix</trd>
  <trd lng="pl">macierz zerowa</trd>
  <trd lng="ru">&c_n;&c_u;&c_l;&c_mol;-&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a;</trd>
</drv>

<drv mrk="matric.sub0o">
  <kap>sub<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(de <ref tip="super" cel="matric.n_p0o">(n,p)-<tld/>o</ref>
      <frm>A</frm>)</klr>
      Tia <frm>(<k>n'</k>,<k>p'</k>)</frm>-<tld/>o <frm>B</frm>, ke
      (1) <frm><k>n'</k> &#8804; <k>n</k></frm> kaj
      <frm><k>p'</k> &#8804; <k>p</k></frm>,
      (2) la elemento de <frm>B</frm> kun indico
      <frm>(<k>i</k>,<k>j</k>)</frm> egalas al la elemento de <frm>A</frm>
      kun indico <frm>(&alfa;(<k>i</k>),&beta;(<k>j</k>))</frm>,
      kie <frm>&alfa;</frm> (respektive <frm>&beta;</frm>) estas strikte
      <ref cel="kresk.0anta.bildigo">kreskanta</ref> bildigo
      de <frm>{1, 2,..., <k>n'</k>}</frm>
      al <frm>{1, 2,..., <k>n</k>}</frm>
      (respektive de <frm>{1, 2,..., <k>p'</k>}</frm>
      al <frm>{1, 2,..., <k>p</k>}</frm>):
      <ekz>
        el <frm>(<k>n</k>,<k>p</k>)</frm>-<tld/>o oni povas formi
        <frm><k>p</k></frm> sub<tld/>ojn kun dimensioj
        <frm>(<k>n</k>,1)</frm>;
      </ekz>
      <ekz>
        eblas prezenti al si sub<tld/>on <frm>B</frm> per tio, kio restas
        el <tld/>o <frm>A</frm>, kiam oni forstrekis iujn horizontalojn kaj
        vertikalojn de &gcirc;i.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Untermatrix</trd>
  <trd lng="en">submatrix</trd>
  <trd lng="fr">sous-matrice</trd>
  <trd lng="hu">r&eacute;szm&aacute;trix</trd>
  <trd lng="pl">podmacierz</trd>
  <trd lng="ru">&c_p;&c_o;&c_d;&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a;</trd>
</drv>

<drv mrk="matric.unuo0o">
  <kap>unuo<tld/>o, <tld/>a unuo</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="matric.0o.MAT">(n,p)-<tld lit="M"/>o</ref>,
      kies
      &ccirc;iuj termoj estas nulaj, krom la diagonalaj, kiuj egalas al la
      unuo:
      <ekz>
        la unuo<tld/>on oni kutime signas per <frm>I</frm>;
      </ekz>
      <ekz>
        unuo<tld/>o estas <ref cel="unu.0o.neuxtra">unuo</ref> rilate al la
        <tld/>a multipliko.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Einheitsmatrix</trd>
  <trd lng="en">unit <ind>matrix</ind></trd>
  <trd lng="fr">matrice unit&eacute;</trd>
  <trd lng="hu">egy&eacute;sgm&aacute;trix</trd>
  <trd lng="pl">macierz jednostkowa</trd>
  <trd lng="ru">&c_je;&c_d;&c_i;&c_n;&c_i;&c_ch;&c_n;&c_a;&c_ja; <ind>&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a;</ind></trd>
  <adm>
    Mi ne trovis auxtoritatan fonton por tiu termino. MatVort
    havas "~a unito" kaj "~unito", kiun mi opinias duoble
    nekonvenaj: unue pro la uzo de "unito" kaj due pro la ordo
    de elementoj. Mi preferis terminon paralelan al "nulmatrico",
    "nulvektoro". <aut>MB</aut>
  </adm>
</drv>

<drv mrk="matric.jakobia0o">
  <kap>jakobia <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(de <ref cel="bild.0igo.MAT">bildigo</ref> <frm><k>f</k></frm>
      de <frm><k>p</k></frm>-dimensia al <frm><k>n</k></frm>-dimensia
      <ref cel="spac.normohava0o">normohavaj spacoj</ref>,
      <ref cel="difere2.0ebla">diferencialebla</ref> &ccirc;e punkto
      <frm><k>a</k></frm>)</klr>
      La <ref tip="super" cel="matric.0o.homomorfio">(n,p)-<tld/>o</ref>
      de &gcirc;ia <ref cel="difere2.0o.cxepunkto">diferencialo</ref>
      &ccirc;e <frm><k>a</k></frm>:
      <ekz>
        la &gcirc;enerala elemento de la jakobia <tld/>o de
        <frm><k>f</k></frm> &ccirc;e <frm><k>a</k></frm> egalas al
        <frm>&#8706;<sub><k>j</k></sub><k>f</k><sub><k>i</k></sub>(<k>a</k>)</frm>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="jakobi.0o">Jakobio</ref>,
      <ref cel="jakobi1.0o">jakobiano</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Jacobische <ind>Matrix</ind></trd>
  <trd lng="en">Jacobian <ind>matrix</ind></trd>
  <trd lng="fr">matrice jacobienne</trd>
  <trd lng="hu">Jacobi-m&aacute;trix</trd>
  <trdgrp lng="pl">
    <trd>macierz Jacobiego</trd>,
    <trd>macierz jakobianowa</trd>
  </trdgrp>
  <trd lng="ru">&c_f;&c_u;&c_n;&c_k;&c_c;&c_i;&c_o;&c_n;&c_a;&c_l;&c_mol;&c_n;&c_a;&c_ja; <ind>&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a;</ind></trd>
</drv>

<drv mrk="matric.0o.homomorfio">
  <kap><tld/>o de vektora homomorfio</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(p.p. <ref cel="homomo.0o">homomorfio</ref> <frm><k>f</k></frm>
      de
      <frm><k>p</k></frm>-dimensia <ref cel="spac.vektora0o">vektora
      spaco</ref>
      <frm><g>E</g></frm> al <frm><k>n</k></frm>-dimensia
      <frm><g>F</g></frm>,
      amba&ubreve; super korpo <frm><g>K</g></frm>, rilate al respektivaj
      <ref cel="baz.0o.vektoraspaco">bazoj</ref>
      <frm><g>B</g><sub><g>E</g></sub></frm>
      kaj <frm><g>B</g><sub><g>F</g></sub></frm>)</klr>
      Tia <ref cel="matric.n_p0o">(n,p)-matrico</ref> <frm>A</frm>
      super <frm><g>K</g></frm>, ke <frm>a<sub><k>i</k><k>j</k></sub></frm>
      estas la <frm><k>i</k></frm>-a
      <ref cel="kompon.0anto.MAT">komponanto</ref>
      la&ubreve; bazo <frm><g>B</g><sub><g>F</g></sub></frm>
      de la bildo per <frm><k>f</k></frm> de la <frm><k>j</k></frm>-a
      vektoro
      de <frm><g>B</g><sub><g>E</g></sub></frm>:
      <ekz>
        la <tld/>o de endomorfio estas kvadrata;
      </ekz>
      <ekz>
        la <tld/>o de <ref cel="ident.0o.bildigo">idento</ref> estas
        la unuo<tld/>o;
      </ekz>
      <ekz>
        la <tld/>o de kunliga&jcirc;o de du homomorfioj egalas al la produto de
        la <tld/>oj de &ccirc;iu homomorfio.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Matrix einer linearer Abbildung</trd>
  <trd lng="en">matrix of a linear mapping</trd>
  <trd lng="fr">matrice d'application lin&eacute;aire</trd>
  <trd lng="hu">vektor-homomorfizmus <ind>m&aacute;trixa</ind></trd>
  <trd lng="pl">macierz odwzorowania liniowego</trd>
  <trd lng="ru">&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a; &c_l;&c_i;&c_n;&c_je;&c_j;&c_n;&c_o;&c_g;&c_o; &c_p;&c_r;&c_je;&c_o;&c_b;&c_r;&c_a;&c_z;&c_o;&c_v;&c_a;&c_n;&c_i;&c_ja;</trd>
</drv>
