<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <rad>serif</rad>/o
    </kap>

    <drv mrk="serif.0o">
      <kap>
        <tld/>o
      </kap>
      <snc>
        <uzo tip="fak">TIP</uzo>
        <dif>
           Malgrandaj limstreketoj &ccirc;e la ekstremoj a&ubreve; anguloj
de
           literbildaj linioj en la klasikaj
           <ref cel="tip.0aro">tiparoj</ref>:
           <ekz>
             multaj opinias ke la <tld/>oj faciligas legadon.
           </ekz>
        </dif>
      </snc>
      <trd lng="de">Serif(e)</trd>
      <trd lng="en">serif</trd>
      <trd lng="fa">&a_s;&a_kasra;&a_r;&f_y;&a_f;</trd>
      <trd lng="fr">empattement</trd>
      <trd lng="hu">bet&udblac;talp</trd>
      <trd lng="nl">schreef</trd>
      <trd lng="pl">szeryf</trd>
      <trd lng="ru">&c_z;&c_a;&c_s;&c_je;&c_ch;&c_k;&c_a; <klr tip="ind">(&c_u;
      &c_b;&c_u;&c_k;&c_v;)</klr></trd>
    </drv>

    <drv mrk="serif.sen0a">
      <kap>
        sen<tld/>a
      </kap>
      <snc>
        <uzo tip="fak">TIP</uzo>
        <dif>
           Pri <ref cel="tip.0aro">tiparo</ref> kies literbildoj 
           ne havas <tld/>ojn:
           <ekz>
             unu <klr>(abonanto)</klr> la&ubreve;dis, ke pli multaj tekstoj
             nun estas presataj per <tld/>aj literoj, kiuj &dash; la&ubreve;
             li &dash; estas pli bone legeblaj ol sen<tld/>aj
             <fnt>
               <aut>S. Maul</aut>: <vrk>Multaj la&ubreve;doj</vrk>.
               <lok>Monato, 2002.</lok>
             </fnt>;
           </ekz><ekz>
              la egaldikaj sen<tld/>aj tiparoj ofte estas pli
avanta&gcirc;aj
              sur malbona ekrano a&ubreve; &ccirc;e malbona prilumado.
           </ekz>
        </dif>
      </snc>
      <trd lng="de">serifenlos</trd>
      <trdgrp lng="en">
         <trd>Doric</trd>, <trd>sans serif</trd>
      </trdgrp>
      <trdgrp lng="fa">
        <trd>&a_b;&f_y;&zwnj;&a_s;&a_kasra;&a_r;&f_y;&a_f;</trd>,
        <trd>&a_s;&a_fatha;&a_n;</trd>
      </trdgrp>
      <trdgrp lng="hu">
         <trd>groteszk<klr tip="ind"> (bet&udblac;t&iacute;pus)</klr></trd>,
         <trd>k&odblac;&iacute;r&aacute;sos<klr tip="ind"> (bet&udblac;t&iacute;pus)</klr></trd>,
         <trd>sans serif</trd>
      </trdgrp>
      <trd lng="nl">schreefloos</trd>
      <trd lng="pl">bezszeryfowy</trd>
      <trdgrp lng="ru">
         <trd>&c_r;&c_u;&c_b;&c_l;&c_je;&c_n;&c_y;&c_j;</trd>,
         <trd>&c_g;&c_r;&c_o;&c_t;&c_je;&c_s;&c_k;&c_n;&c_y;&c_j;<klr tip="ind">
         (&c_sh;&c_r;&c_i;&c_f;&c_t;)</klr></trd>,
         <trd>&c_b;&c_je;&c_z; &c_z;&c_a;&c_s;&c_je;&c_ch;&c_je;&c_k;</trd>
      </trdgrp>
    </drv>

  </art>

