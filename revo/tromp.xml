<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>tromp</rad>/i
</kap>
<drv mrk="tromp.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <uzo tip="klr">(iu)</uzo>
    <dif>
      Ruze kaj malice erarigi iun:
      <ekz>
        <tld/>i la a&ccirc;etanton<fnt>B</fnt>;
      </ekz>
      <ekz>
        ni ne lasu nin <tld/>i per tiaj belaj promesoj;
      </ekz>
      <ekz>
        <tld/>e (por <tld/>i) ka&scirc;i sian malamon<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>ita edzo
        (<refgrp tip="sin">
          <ref cel="kok.0o">koko</ref>,
          <ref cel="kokr.0i">kokri</ref>
        </refgrp>).
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="perfid.0i">perfidi</ref>,
      <ref cel="mistif.0i">mistifiki</ref>,
      <ref cel="fripon.0o">fripono</ref>.
    </refgrp>
    <ref tip="vid" cel="polv.0o">polvo</ref>
    <trdgrp lng="de">
      <trd>t&auml;uschen</trd>,
      <trd>betr&uuml;gen</trd>,
      <trd>hintergehen</trd>
    </trdgrp>
    <trdgrp lng="fr">
      <trd>tromper</trd>, <trd>duper</trd>, <trd>abuser</trd>
    </trdgrp>
    <trd lng="es">hacer <ind>trampa</ind></trd>
    <trdgrp lng="lat">
      <trd>decipio, ere</trd>,
      <trd>fallo, ere</trd>
    </trdgrp>
  </snc>
  <snc>
    <uzo tip="klr">(io)</uzo>
    <dif>
      Ka&ubreve;zi eraron:
      <ekz>
        &scirc;ajno <tld/>as
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <trd lng="de">t&auml;uschen</trd>
  </snc>
  <snc>
    <dif>
      Ka&ubreve;zi elrevi&gcirc;on:
      <ekz>
        <tld/>i la esperojn<fnt>B</fnt>;
      </ekz>
      <ekz>
        esti <tld/>ita en siaj esperoj<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="de">entt&auml;uschen</trd>
    <trd lng="es">enga&ntilde;ar</trd>
    <trd lng="fr">d&eacute;cevoir</trd>
  </snc>
  <snc>
    <dif>
      Sukcese eviti:
      <ekz>
        li <tld/>is la atenton de Laban kaj rapide forkuris<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="nl">ontwijken</trd>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_sh;&c_u;&c_k;&c_v;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_p;&c_a;&c_d;&c_m;&c_a;&c_n;&c_v;&c_a;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="en">deceive</trd>
  <trd lng="nl">bedriegen</trd>
  <trdgrp lng="ru">
    <trd>&c_o;&c_b;&c_m;&c_a;&c_n;&c_y;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_o;&c_b;&c_m;&c_a;&c_n;&c_u;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="tromp.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      <tld lit="T"/>anta:
      <ekz>
        &ccirc;armeco estas <tld/>a<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>a &scirc;ajno, kvieto;
      </ekz>
      <ekz>
        &gcirc;i estas <tld/>a pano<fnt>Z</fnt>
        <klr>(&scirc;ajna, ne efektiva bono)</klr>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_a;&c_d;&c_m;&c_a;&c_n;&c_l;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_z;&c_m;&c_a;&c_n;&c_l;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_a;&c_sh;&c_u;&c_k;&c_n;&c_y;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>t&auml;uschend</trd>,
    <trd>betr&uuml;gerisch</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>trompeur</trd>,
    <trd>fallacieux</trd>
  </trdgrp>
  <trdgrp lng="lat">
    <trd>dolosus</trd>,
    <trd>fallax</trd>
  </trdgrp>
  <trd lng="nl">bedrieglijk</trd>
  <trdgrp lng="ru">
    <trd>&c_o;&c_b;&c_m;&c_a;&c_n;&c_ch;&c_i;&c_v;&c_y;&c_j;</trd>,
    <trd>&c_o;&c_b;&c_m;&c_a;&c_n;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
</drv>

<drv mrk="tromp.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc>
    <dif>
      Esti <tld/>ita.
    </dif>
    <trd lng="de">get&auml;uscht werden</trd>
  </snc>
  <snc>
    <uzo tip="stl">EVI</uzo>
    <dif>
      Erari 2:
      <ekz>
        balda&ubreve; ni vidis, ke ni <tld/>i&gcirc;is<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd><klr>sich </klr>t&auml;uschen</trd>,
      <trd><klr>sich </klr>irren</trd>
    </trdgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_sh;&c_u;&c_k;&c_a;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_p;&c_a;&c_d;&c_m;&c_a;&c_n;&c_u;&c_c;&c_c;&c_a;</trd>
  </trdgrp>
  <trd lng="ru">&c_o;&c_b;&c_m;&c_a;&c_n;&c_u;&c_t;&c_mol;&c_s;&c_ja;</trd>
</drv>

<drv mrk="tromp.0igxo">
  <kap><tld/>i&gcirc;o</kap>
  <snc>
    <dif>
      Elrevi&gcirc;o, seniluzii&gcirc;o.
    </dif>
  </snc>
  <trd lng="de">Entt&auml;uschung</trd>
</drv>
</art>
