<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>tromp</rad>/i 
</kap>
<drv mrk="tromp.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="tromp.0i.KOMUNE">
    <dif>
      Erarigi iun, kredigi ion malefektivan, ofte ruze kaj malice:
      <ekz>
        <tld/>i la a&ccirc;etanton<fnt>B</fnt>;
      </ekz>
      <ekz>
        neniun mi iam konscie <tld/>is e&ccirc; pri la valoro de unu
        helero 
        <fnt>
          <aut>&Scirc;ilero, tr. &Z;</aut>: <vrk>La rabistoj</vrk>.
        </fnt>;
      </ekz>
      <ekz>
        ni ne lasu nin <tld/>i per tiaj belaj promesoj;
      </ekz>
      <ekz>
        vi ne havas edzinon, kiu vin <tld/>as
        <klr>(estas al vi <ref cel="fidel.mal0a">malfidela</ref>)</klr>;
        (<refgrp tip="vid">
          <ref cel="kok.0o.AGR">koko</ref>,
          <ref cel="kokr.0i">kokri</ref>
        </refgrp>)
        <fnt><bib>FK</bib>, <lok>4, rakontoj, la porcio da
        glacia&jcirc;o</lok></fnt>;
      </ekz>
      <ekz>
      </ekz>
      <ekz>
        <ind>&scirc;ajno <tld/>as</ind>
        <trd lng="es">las apariencias enga&ntilde;an</trd>
        <trd lng="fr">les apparences sont trompeuses</trd>
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>i la esperojn
        <klr>(ka&ubreve;zi elrevi&gcirc;on)</klr>
        <fnt>B</fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <nom>Jakob</nom> <tld/>is <klr>(sukcese evitis)</klr> la atenton
        de <nom>Laban</nom>
        <klr>[&#8230;]</klr> ne dirante al li, ke li forkuras
        <fnt><bib>MT</bib>, <lok>&Gen; 31:20</lok></fnt>;
      </ekz>
      <ekz>
        <tld/>akira&jcirc;oj
        <fnt>
          <bib>MT</bib>
          <lok>Jeremia 5:27</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>logi
        <fnt>
          <bib>MT</bib>
          <lok>II. Samuel 3:25</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="fripon.0o">fripono</ref>,
      <ref cel="mistifik.0i">mistifiki</ref>,
      <ref cel="perfid.0i">perfidi</ref>,
      <ref cel="polv.0o">polvo</ref>
    </refgrp>
  </snc>
  <trdgrp lng="lat">
    <trd>decipio, ere</trd>,
    <trd>fallo, ere</trd>
  </trdgrp>
  <trdgrp lng="be">
    <trd>&c_a;&c_sh;&c_u;&c_k;&c_v;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_p;&c_a;&c_d;&c_m;&c_a;&c_n;&c_v;&c_a;&c_c;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>klamat</trd>,
    <trd>m&yacute;lit</trd>,
    <trd>o&scaron;idit</trd>,
    <trd>podv&aacute;d&ecaron;t</trd>,
    <trd>zklamat</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>entt&auml;uschen</trd>,
    <trd>t&auml;uschen</trd>,
    <trd>betr&uuml;gen</trd>,
    <trd>hintergehen</trd>
  </trdgrp>
  <trd lng="en">deceive</trd>
  <trdgrp lng="es">
    <trd>enga&ntilde;ar</trd>,
    <trd>hacer <ind>trampa</ind></trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>abuser</trd>,
    <trd>duper</trd>,
    <trd>tromper</trd>,
    <trd>tricher<klr> (ntr)</klr></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>becsap</trd>,
    <trd>r&aacute;szed</trd>,
    <trd>megt&eacute;veszt</trd>,
    <trd>csal</trd>,
    <trd lng="hu">megcsal</trd>,
    <trd lng="hu">megker&uuml;l</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>bedriegen</trd>,
    <trd>ontwijken</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>oszukiwa&cacute;</trd>,
    <trd>okpi&cacute;</trd>,
    <trd>podchodzi&cacute;<klr> (kogo&sacute;)</klr></trd>,
    <trd>szachrai&cacute;<klr> (pot.)</klr></trd>,
    <trd>cygani&cacute;<klr> (pot.)</klr></trd>,
    <trd>oszwabi&cacute;<klr> (pot.)</klr></trd>,
    <trd>zdradza&cacute;</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>enganar</trd>,
    <trd>iludir</trd>,
    <trd>burlar</trd>,
    <trd>embair</trd>,
    <trd>fraudar</trd>,    
    <trd>lograr</trd>,    
    <trd>ludibriar</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_o;&c_b;&c_m;&c_a;&c_n;&c_y;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_o;&c_b;&c_m;&c_a;&c_n;&c_u;&c_t;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>oklama&tcaron;</trd>,
    <trd>o&scaron;iali&tcaron;</trd>,
    <trd>o&scaron;udi&tcaron;</trd>,
    <trd>podvies&tcaron;</trd>
  </trdgrp>
</drv>

<drv mrk="tromp.0a">
  <kap><tld/>a</kap>
  <snc mrk="tromp.0a.KOMUNE">
    <dif>
      <tld lit="T"/>anta:
      <ekz>
        &ccirc;armeco estas <tld/>a
        <fnt>
          <bib>MT</bib>
          <lok>Sentencoj 31:30</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>a &scirc;ajno, kvieto;
      </ekz>
      <ekz>
        <tld/>a vojo ne erarigos la sa&gcirc;ulon
        <fnt>
          <bib>Far3</bib>
          <lok>&Ccirc;apitro VIII</lok>
        </fnt>;
      </ekz>
      <ekz>
        Aprila vetero &#8208; <tld/>a aero
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        &gcirc;i estas <tld/>a pano
        <fnt>
          <bib>MT</bib>
          <lok>Sentencoj 23:3</lok>
        </fnt>
        <klr>(&scirc;ajna, ne efektiva bono)</klr>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="lat">
    <trd>dolosus</trd>,
    <trd>fallax</trd>
  </trdgrp>
  <trdgrp lng="be">
    <trd>&c_p;&c_a;&c_d;&c_m;&c_a;&c_n;&c_l;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_z;&c_m;&c_a;&c_n;&c_l;&c_ib;&c_v;&c_y;</trd>,
    <trd>&c_a;&c_sh;&c_u;&c_k;&c_n;&c_y;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>klamn&yacute;</trd>,
    <trd>podvodn&yacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>t&auml;uschend</trd>,
    <trd>betr&uuml;gerisch</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>enga&ntilde;oso</trd>,
    <trd>falaz</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>trompeur</trd>,
    <trd>fallacieux</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>csal&oacute;</trd>,
    <trd>megt&eacute;veszt&odblac;</trd>
  </trdgrp>
  <trd lng="nl">bedrieglijk</trd>
  <trdgrp lng="pl">
    <trd>oszuka&nacute;czy</trd>,
    <trd>szachraj&aogonek;cy</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_o;&c_b;&c_m;&c_a;&c_n;&c_ch;&c_i;&c_v;&c_y;&c_j;</trd>,
    <trd>&c_o;&c_b;&c_m;&c_a;&c_n;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>klamn&yacute;</trd>,
    <trd>l&zcaron;iv&yacute;</trd>,
    <trd>podvodn&yacute;</trd>
  </trdgrp>
</drv>


<drv mrk="tromp.0e">
  <kap>
    <tld/>e
  </kap>
  <snc>
    <dif>
      Per trompo:
      <ekz>
        li redonu <klr>[&#8230;]</klr> tion, kion li <tld/>e forprenis
        <fnt>
          <bib>MT</bib>
          <lok>Levidoj 6:4</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>e <klr>(por <tld/>i)</klr> ka&scirc;i sian
        malamon        
        <fnt>
          <bib>MT</bib>
          <lok>Sentencoj 26:26</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">betr&uuml;gerisch</trd>
</drv>


<drv mrk="tromp.0o">
  <kap><tld/>o</kap>
  <snc mrk="tromp.0o.KOMUNE">
    <dif>
      Konscia, ruza kredigo de malvera&jcirc;o, misgvido, 
      erarigo:
      <ekz>
        lia bu&scirc;o estas plena de malbenado, <klr>[trompo]</klr>, kaj
        malico
        <fnt>
          <bib>MT</bib>
          <lok>Psalmaro 10:7</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[ili]</klr> pensis, ke tio estas <tld/>o de la okuloj, tiel
        neesprimeble
        bela ili trovis la vida&jcirc;on
        <fnt>
          <bib>Fab4</bib>
          <lok>Filino de la mar&ccirc;a re&gcirc;o</lok>
        </fnt>;
      </ekz>
      <ekz>
        tio tute ne estis vera, li volis nur fari al li Aprilan <tld/>on
        <fnt>
          <bib>Fab4</bib>
          <lok>Dekdu per la po&scirc;to</lok>
        </fnt>;
      </ekz>
      <ekz>
        la <tld/>on en liaj paroloj neniu rimarkis
        <fnt>
          <aut>Manashi Dasgupta, trad. G. Gharbaari</aut>,
          <vrk>Dormanta Hejmaro</vrk>,
          <lok>2006</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="cs">
    <trd>klam</trd>,
    <trd>podvod</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>enga&ntilde;o</trd>,
    <trd>fraude</trd>
  </trdgrp>
  <trdgrp lng="fr">
      <trd>tromperie</trd>,
      <trd>triche</trd>,
      <trd>tricherie</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>klam</trd>,
    <trd>klamstvo</trd>,
    <trd>podvod</trd>
  </trdgrp>
</drv>

<drv mrk="tromp.0anto">
  <kap>
    <tld/>anto
  </kap>
  <snc>
    <dif>
      Tiu, kiu <tld/>as:
      <ekz>
        mi estos en liaj okuloj kiel <tld/>anto, kaj mi venigos sur min
        malbenon
        <fnt>
          <bib>MT</bib>
          <lok>Genezo 27:12</lok>
        </fnt>;
      </ekz>
      <ekz>
        unu tagon venis anka&ubreve; du <tld/>antoj, kiuj diris, ke ili
        <klr>[&#8230;]</klr>
        teksas la plej belan &scirc;tofon, <klr>[&#8230;]</klr> sed la vestoj
        <klr>[&#8230;]</klr>
        el tiu &ccirc;i &scirc;tofo, havas la mirindan econ, ke al &ccirc;iu, kiu
        <klr>[&#8230;]</klr> estas tro malsa&gcirc;a,
        ili restas nevideblaj
        <fnt>
          <bib>Fab1</bib>
          <lok>La novaj vestoj de la re&gcirc;o</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Betr&uuml;ger</trd>
</drv>


<drv mrk="tromp.0igxi">
  <kap><ofc>*</ofc><tld/>i&gcirc;i</kap>
  <snc mrk="tromp.0igxi.KOMUNE">
    <dif>
      Esti <tld/>ita:
      <ekz>
        per via sor&ccirc;ado &ccirc;iuj nacioj <tld/>i&gcirc;is
        <fnt>
          <bib>NT</bib>
          <lok>Apokalipso 18:23</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="de">get&auml;uscht werden</trd>
    <trdgrp lng="pl">
      <trd>da&cacute; si&eogonek; <ind>oszuka&cacute;</ind></trd>,
      <trd>pozwoli&cacute; si&eogonek; <ind>oszuka&cacute;</ind></trd>,
      <trd>da&cacute; si&eogonek;
      <ind>podej&sacute;&cacute;</ind></trd>,
      <trd>pozwoli&cacute; si&eogonek;
      <ind>podej&sacute;&cacute;</ind></trd>,
      <trd>da&cacute; si&eogonek; <ind>oszachrai&cacute;</ind><klr>
      (pot.)</klr></trd>,
      <trd>pozwoli&cacute; si&eogonek; <ind>oszachrai&cacute;</ind><klr>
      (pot.)</klr></trd>,
      <trd>da&cacute; si&eogonek; <ind>ocygani&cacute;</ind><klr>
      (pot.)</klr></trd>,
      <trd>pozwoli&cacute; si&eogonek; <ind>ocygani&cacute;</ind><klr>
      (pot.)</klr></trd>,
      <trd>da&cacute; si&eogonek; <ind>oszwabi&cacute;</ind><klr>
      (pot.)</klr></trd>,
      <trd>pozwoli&cacute; si&eogonek; <ind>oszwabi&cacute;</ind><klr>
      (pot.)</klr></trd>,
      <trd>da&cacute; si&eogonek; <ind>wydyma&cacute;</ind><klr> (pot.
      wulg.)</klr></trd>,
      <trd>pozwoli&cacute; si&eogonek; <ind>wydyma&cacute;</ind><klr>
      (pot. wulg.)</klr></trd>,
    </trdgrp>
  </snc>
  <snc mrk="tromp.0igxi.erari">
    <uzo tip="stl">EVI</uzo>
    <dif>
      <ref tip="dif" cel="erar.0i.opinii">Erari<sncref/></ref>:
      <ekz>
        kiam vi ekparolis, ni atendis a&ubreve;di ion novan, sed balda&ubreve; ni
        vidis, ke ni
        <tld/>i&gcirc;is
        <fnt>
          <bib>F</bib>
          <lok>&FE; 40</lok>
        </fnt>.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd><klr>sich </klr>t&auml;uschen</trd>,
      <trd><klr>sich </klr>irren</trd>
    </trdgrp>
    <trdgrp lng="pl">
      <trd>oszuka&cacute; di&eogonek;</trd>,
      <trd>oszachrai&cacute; si&eogonek;<klr> (pot.)</klr></trd>,
      <trd>ocygani&cacute; si&eogonek;<klr> (pot.)</klr></trd>,
      <trd>oszwabi&cacute; si&eogonek;<klr> (pot.)</klr></trd>
    </trdgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_sh;&c_u;&c_k;&c_a;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_p;&c_a;&c_d;&c_m;&c_a;&c_n;&c_u;&c_c;&c_c;&c_a;</trd>
  </trdgrp>
  <trd lng="es">confundirse</trd>
  <trd lng="hu">csal&oacute;dik</trd>
  <trd lng="ru">&c_o;&c_b;&c_m;&c_a;&c_n;&c_u;&c_t;&c_mol;&c_s;&c_ja;</trd>
</drv>

<drv mrk="tromp.0igxo">
  <kap><tld/>i&gcirc;o</kap>
  <snc mrk="tromp.0igxo.iluzio">
    <dif>
      Iluzii&gcirc;o:
      <ekz>
        &gcirc;i estas nekredebla, &gcirc;i estas son&gcirc;o, &gcirc;i estas <tld/>i&gcirc;o de la
        sentoj!
        <fnt>
          <bib>Rabistoj</bib>
          <lok>Akto Unua</lok>
        </fnt>;
      </ekz>
      <ekz>
        malfacilaj tagoj, doloro kaj <tld/>i&gcirc;o estis lia sorto
        <fnt>
          <bib>Fab4</bib>
          <lok>Historio el la dunoj</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi tion faros kun plena neka&scirc;emeco pro tio, ke mi anta&ubreve;savu vin
        de novaj
        <tld/>i&gcirc;oj kaj disrevi&gcirc;oj
        <fnt>
          <bib>Marta</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="ant">
       <ref cel="rev.el0igxo">elrevi&gcirc;o</ref>,
       <ref cel="iluzi.sen0igxi">seniluzii&gcirc;o</ref>
    </refgrp>
    <trd lng="de">T&auml;uschung</trd>
    <trd lng="en">ilusion</trd>
  </snc>
</drv>

<drv mrk="tromp.0isto">
  <kap>
    <tld/>isto
  </kap>
  <snc>
    <dif>
      Tiu, kiu <tld/>as por vivteni sin, profesieca <tld/>anto:
      <ekz>
        <tld/>isto, &scirc;telisto, de kiu honesta homo nenion povas profiti
        <fnt>
          <bib>Far1</bib>
          <lok>&Ccirc;apitro XIX</lok>
        </fnt>;
      </ekz>
      <ekz>
        ne pensu, ke ni estas <tld/>istoj
        <fnt>
          <bib>Far3</bib>
          <lok>&Ccirc;apitro IX</lok>
        </fnt>;
      </ekz>
      <ekz>
        &leftquot;&ccirc;u la <tld/>istoj pagis sian kalkulon?&rightquot; demandas la policisto
        <fnt>
          <bib>FK</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Betr&uuml;ger</trd>
</drv>


