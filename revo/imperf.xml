<vortaro>
<art mrk="$Id: imperf.xml,v 1.20 2023/11/19 10:22:12 revo Exp $">
<kap>
  <ofc>2</ofc>
  <rad>imperfekt</rad>/o
</kap>
<drv mrk="imperf.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">GRA</uzo>
  <dif>
    Verba tempo, uzata en kelkaj lingvoj (latina, franca, slavona kc),
    kaj
    montranta:
  </dif>
  <snc>
    <dif>
      pasintan agon, konsideratan kiel okazantan samtempe kun alia
      pasinta
      ago. En E-o tiu ideo traduki&gcirc;as jen per simpla preterito:
      <ekz>
        kiam mi eniris, li fumis,
      </ekz>
      jen per preterito de la helpverbo kaj prezenca participo de la
      radikverbo:
      <ekz>
        &ccirc;e la sama momento, kiam &scirc;i ploregis, li estis 
ridetanta.
      </ekz>
    </dif>
  </snc>
  <snc>
    <dif>
      longeda&ubreve;ran a&ubreve; kutiman pasintan agon. En E-o tiu ideo
      traduki&gcirc;as ordinare per preterito de la verbo, al kiu oni 
aldonas
      la sufikson <em>ad</em>:
      <ekz>
        tie &scirc;i sidadis kaj rigardadis la junan re&gcirc;idon
        <fnt><bib>Fab1</bib>, <lok>La virineto de maro</lok></fnt>;
      </ekz>
      <ekz>
        kiam estis suno, ili etendadis kaj sekigadis la velojn;
      </ekz>
      <ekz>
        ofte la fratinoj &ccirc;irka&ubreve;prenadis unu la alian kaj
        suprenna&gcirc;adis super la akvon
        <fnt><bib>Fab1</bib>, <lok>La virineto de maro</lok></fnt>.
      </ekz>
    </dif>
    <rim>
      Kelkaj gramatikistoj nelogike difinas la nomon <tld/>o por la sola
      
verba
      &ccirc;irka&ubreve;frazo <em>estis -anta</em>.
    </rim>
  </snc>
  <trdgrp lng="be">
    <trd>&c_ib;&c_m;&c_p;&c_e;&c_r;&c_f;&c_e;&c_k;&c_t;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_sh;&c_l;&c_y; 
&c_n;&c_je;&c_z;&c_a;&c_k;&c_o;&c_n;&c_ch;&c_a;&c_n;&c_y; 
&c_ch;&c_a;&c_s;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_sh;&c_l;&c_y; &c_ch;&c_a;&c_s; 
&c_n;&c_je;&c_z;&c_a;&c_k;&c_o;&c_n;&c_ch;&c_a;&c_n;&c_a;&c_g;&c_a; 
&c_t;&c_r;&c_y;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_ja;</trd>
  </trdgrp>
  <trd lng="ca">imperfectiu<klr> (subst.)</klr></trd>
  <trd lng="cs">imperfektum</trd>
  <trdgrp lng="de">
     <trd>Imperfekt</trd>,
     <trd>Vergangenheitsform</trd>
  </trdgrp>
  <trd lng="fr">imparfait<klr tip="ind"> (subst., gramm.)</klr></trd>
  <trdgrp lng="hu">
     <trd>elbesz&eacute;l&odblac; m&uacute;lt</trd>,
     <trd>imperfektum</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x534A;&#x904E;&#x53BB;  <pr>&#x306F;&#x3093;&#x304B;&#x3053;</pr></trd>,
    <trd>&#x672A;&#x5B8C;&#x4E86;&#x6642;&#x5236;  <pr>&#x307F;&#x304B;&#x3093;&#x308A;&#x3087;&#x3046;&#x3058;&#x305B;&#x3044;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>imperfectum</trd>,
    <trd>onvoltooid verleden <ind>tijd</ind></trd>
  </trdgrp>
  <trd lng="pl">czas przesz&lstroke;y niedokonany</trd>
  <trd lng="pt">imperfeito<klr tip="amb"> (subst.; 
gram&aacute;tica)</klr></trd>
  <trd lng="ro">imperfect</trd>
  <trdgrp lng="ru">
    <trd>&c_i;&c_m;&c_p;&c_je;&c_r;&c_f;&c_je;&c_k;&c_t;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_sh;&c_je;&c_d;&c_sh;&c_je;&c_je; 
&c_n;&c_je;&c_s;&c_o;&c_v;&c_je;&c_r;&c_sh;&c_je;&c_n;&c_n;&c_o;&c_je; 
&c_v;&c_r;&c_je;&c_m;&c_ja;</trd>
  </trdgrp>
  <trd lng="sk">imperfektum</trd>
  <trdgrp lng="uk">
    <trd>&#x456;&#x43C;&#x43F;&#x435;&#x440;&#x444;&#x435;&#x43A;&#x442;</trd>,
    <trd>&#x43C;&#x438;&#x43D;&#x443;&#x43B;&#x438;&#x439; &#x43D;&#x435;&#x434;&#x43E;&#x43A;&#x43E;&#x43D;&#x430;&#x43D;&#x438;&#x439; &#x447;&#x430;&#x441;</trd>
  </trdgrp>
  <trd lng="zh">&#x672A;&#x5B8C;&#x6210;&#x65F6; <pr>w&#xE8;iw&#xE1;nch&#xE9;ngsh&#xED;</pr></trd>
</drv>
