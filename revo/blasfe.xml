<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: blasfe.xml,v 1.20 2022/03/13 08:37:54 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>blasfem</rad>/i
</kap>
<drv mrk="blasfe.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec>,<vspec>abs.</vspec></gra>
  <snc>
    <dif>
      Direkti malrespektajn kaj ofendajn vortojn al Dio, dia&jcirc;o,
      religio a&ubreve; pli &gcirc;enerale al &ccirc;io konsiderata
      plej respektinda; paroli malrespekte kaj ofende pri tiaj aferoj:
      <klr>(kun rekta objekto)</klr>
      <ekz>
        &ccirc;u fremdulo, &ccirc;u indi&gcirc;eno, se li <tld/>os la
        nomon de
        la Eternulo, estu mortigita
        <fnt><bib>MT</bib>, <lok>&Lev; 24:16</lok></fnt>;
      </ekz>
      <ekz>
        &ccirc;iu, kiu <tld/>os sian Dion, portos sian pekon
        <fnt><bib>MT</bib>, <lok>&Lev; 24:15</lok></fnt>;
      </ekz>
      <ekz>
        ne timu la vortojn, kiujn vi a&ubreve;dis kaj per kiuj <tld/>is
        Min la
        servantoj de la re&gcirc;o de Asirio
        <fnt><bib>MT</bib>, <lok>&Re2; 19:6</lok></fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>i la veron<fnt>PIV1</fnt><klr>(tiom aplombe mensogi, ke
        tio
        kvaza&ubreve;e ofendas la veron)</klr>;
      </ekz>
      <klr>(kun nerekta objekto)</klr>
      <ekz>
        vi <tld/>is kontra&ubreve; Dio kaj la re&gcirc;o
        <fnt><bib>MT</bib>, <lok>&Re1; 21:10</lok></fnt>;
      </ekz>
      <klr>(absolute)</klr>
      <ekz>
        vi <tld/>as, princo, &ccirc;ar vi ne konas la altajn misterojn
        de la
        religio
        <fnt><bib>Far1</bib>, <lok>&ccirc;ap.22</lok></fnt>;
      </ekz>
      <ekz>
        mi malplezuri&gcirc;is &ccirc;e la konduto de
        multaj Babelaj kaj Feniciaj komercistoj pro iliaj
        <tld/>aj kaj mal&ccirc;astaj paroloj en la gastejo
        <fnt><aut>Luyken</aut>: <vrk>Pro
        I&scirc;tar</vrk>,<lok>&ccirc;ap.11</lok></fnt>;
      </ekz>
      <ekz>
        elirigu la <tld/>inton ekster la tendaron; [...] kaj la tuta
        komunumo mortigu lin per &scirc;tonoj
        <fnt><bib>MT</bib>, <lok>&Lev; 24:14</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_b;&c_l;&c_ju;&c_z;&c_mol;&c_n;&c_je;&c_r;&c_y;&c_c;&c_mol;</trd>,
      <trd>&c_b;&c_l;&c_ju;&c_z;&c_mol;&c_n;&c_ib;&c_c;&c_mol;</trd>
    </trdgrp>
    <trdgrp lng="de">
      <trd>l&auml;stern</trd>,
      <trd>Gott l&auml;stern</trd>
    </trdgrp>
    <trd lng="fa">&f_k;&a_f;&a_r; &f_g;&a_f;&a_t;&a_n;</trd>
    <trdgrp lng="fr">
      <trd>blasph&eacute;mer</trd>,
      <trd>jurer</trd>,
      <trd>sacrer <klr tip="ind">(jurer)</klr></trd>
    </trdgrp>
    <trd lng="pl">blu&zacute;ni&cacute;</trd>
    <trd lng="hu">k&aacute;romkodik</trd>
    <trd lng="ru">&c_b;&c_o;&c_g;&c_o;&c_h;&c_u;&c_l;&c_mol;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  </snc>
  <snc>
    <dif>
      Insulte malbeni:
      <ekz>
        <tld/>i kontra&ubreve; iu per koleraj vortoj<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_l;&c_a;&c_ja;&c_c;&c_c;&c_a;</trd>
    <trdgrp lng="de">
      <trd>verfluchen</trd>
    </trdgrp>
    <trdgrp lng="fa">
      <trd>&a_d;&a_sh;&a_n;&a_A;&a_m; &a_d;&a_A;&a_d;&a_n;</trd>,
      <trd>&a_n;&a_A;&a_s;&a_z;&a_A; &f_g;&a_f;&a_t;&a_n;</trd>
    </trdgrp>
    <trdgrp lng="fr">
      <trd>blasph&eacute;mer</trd>,
      <trd>injurier</trd>
    </trdgrp>
    <trd lng="hu">&aacute;tkoz&oacute;dik</trd>
    <trdgrp lng="pl">
      <trd>kl&aogonek;&cacute;</trd>,
      <trd>przeklina&cacute;</trd>
    </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_r;&c_u;&c_g;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>,
      <trd>&c_b;&c_r;&c_a;&c_n;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
    </trdgrp>
  </snc>
    <refgrp tip="vid">
     <ref cel="insult.0i">insulti</ref>,
     <ref cel="ben.mal0i">malbeni</ref>,
     <ref cel="ofend.0i">ofendi</ref>,
     <ref cel="sakr1.0i">sakri</ref>.
   </refgrp>
  <trdgrp lng="cs">
    <trd>kl&iacute;t</trd>,
    <trd>rouhat se <klr>(Bohu)</klr></trd>
  </trdgrp>
  <trd lng="en">blaspheme</trd>
  <trd lng="he">&#x5DC;&#x5E7;&#x5DC;&#x5DC;</trd>
  <trd lng="pt">blasfemar</trd>
  <trdgrp lng="sk">
    <trd>hre&scaron;i&tcaron;</trd>,
    <trd>klia&tcaron;</trd>,
    <trd>nad&aacute;va&tcaron;</trd>,
    <trd>r&uacute;ha&tcaron; sa</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x445;&#x443;&#x43B;&#x438;&#x442;&#x438; (&#x430;&#x431;&#x43E;&#xA0;&#x437;&#x43D;&#x435;&#x432;&#x430;&#x436;&#x430;&#x442;&#x438;) &#x411;&#x43E;&#x433;&#x430;</trd>,
    <trd>&#x431;&#x43E;&#x433;&#x43E;&#x445;&#x443;&#x43B;&#x438;&#x442;&#x438;</trd>,
    <trd>&#x431;&#x43B;&#x44E;&#x437;&#x43D;&#x438;&#x442;&#x438;</trd>
  </trdgrp>
</drv>

<drv mrk="blasfe.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Vortoj de <tld/>anto.
    </dif>
    <trdgrp lng="be">
      <trd>&c_b;&c_l;&c_ju;&c_z;&c_mol;&c_n;&c_je;&c_r;&c_s;&c_t;&c_v;&c_a;</trd>,
      <trd>&c_l;&c_a;&c_ja;&c_n;&c_k;&c_a;</trd>
    </trdgrp>
    <trdgrp lng="de">
      <trd>Gottesl&auml;sterung</trd>,
      <trd>Blasphemie</trd>
    </trdgrp>
    <trd lng="en">blasphemy</trd>
    <trd lng="es">blasfemia</trd>
    <trdgrp lng="fa">
      <trd>&f_k;&a_f;&a_r;</trd>,
      <trd>&a_d;&a_sh;&a_n;&a_A;&a_m;</trd>,
      <trd>&a_n;&a_A;&a_s;&a_z;&a_A;</trd>
    </trdgrp>
    <trd lng="fr">blasph&egrave;me</trd>
    <trdgrp lng="hu">
      <trd>k&aacute;romkod&aacute;s</trd>,
      <trd>istenk&aacute;roml&aacute;s</trd>
    </trdgrp>
    <trdgrp lng="pl">
      <trd>blu&zacute;nierstwo</trd>,
      <trd>przekle&nacute;stwo</trd>
    </trdgrp>
    <trd lng="pt">blasf&ecirc;mia</trd>
    <trdgrp lng="ru">
      <trd>&c_r;&c_u;&c_g;&c_a;&c_n;&c_mol;</trd>,
      <trd>&c_b;&c_o;&c_g;&c_o;&c_h;&c_u;&c_l;&c_mol;&c_s;&c_t;&c_v;&c_o;</trd>
    </trdgrp>
  </snc>
  <trdgrp lng="cs">
    <trd>blasfemie</trd>,
    <trd>nad&aacute;vka</trd>,
    <trd>rouh&aacute;n&iacute;</trd>,
    <trd>ur&aacute;&zcaron;en&iacute;</trd>,
    <trd>zneva&zcaron;ov&aacute;n&iacute;</trd>
  </trdgrp>
  <trd lng="he">&#x5E7;&#x5DC;&#x5DC;&#x5D4;</trd>
  <trdgrp lng="sk">
    <trd>prekl&iacute;nanie</trd>,
    <trd>zlore&ccaron;enie</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x431;&#x43E;&#x433;&#x43E;&#x445;&#x443;&#x43B;&#x44C;&#x441;&#x442;&#x432;&#x43E;</trd>,
    <trd>&#x431;&#x43B;&#x44E;&#x437;&#x43D;&#x456;&#x440;&#x441;&#x442;&#x432;&#x43E;</trd>
  </trdgrp>
</drv>

<drv mrk="blasfe.0ulo">
  <kap><tld/>ulo</kap>
  <snc>
    <dif>
      Iu, kiu kutimas <tld/>i:
      <ekz>
        fiera malbonulo, kiun oni nomas <tld/>ulo,
        agas kun kolero kaj malboneco
        <fnt><bib>MT</bib>, <lok>&Sen; 21:24</lok></fnt>;
      </ekz>
      <ekz>
        la krampo premu viajn interna&jcirc;ojn, ribeluloj, <tld/>uloj!
        <fnt><bib>Far1</bib>, <lok>&ccirc;ap.12</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_l;&c_ju;&c_z;&c_mol;&c_n;&c_je;&c_r;</trd>
  <trd lng="cs">rouha&ccaron;</trd>
  <trdgrp lng="de">
    <trd>Gottesl&auml;sterer</trd>
  </trdgrp>
  <trd lng="en">blasphemer</trd>
  <trdgrp lng="fa">
    <trd>&f_k;&a_f;&a_r;&f_g;&a_w;</trd>,
    <trd>&a_n;&a_A;&a_s;&a_z;&a_A;&f_g;&a_w;</trd>
  </trdgrp>
  <trd lng="fr">blasph&eacute;mateur</trd>
  <trd lng="hu">k&aacute;romkod&oacute;s ember</trd>
  <trd lng="pl">blu&zacute;nierca</trd>
  <trd lng="pt">blasfemo</trd>
  <trd lng="ru">&c_b;&c_o;&c_g;&c_o;&c_h;&c_u;&c_l;&c_mol;&c_n;&c_i;&c_k;</trd>
  <trd lng="sk">r&uacute;ha&ccaron;</trd>
  <trdgrp lng="uk">
    <trd>&#x431;&#x43E;&#x433;&#x43E;&#x445;&#x443;&#x43B;&#x44C;&#x43D;&#x438;&#x43A;</trd>,
    <trd>&#x431;&#x43B;&#x44E;&#x437;&#x43D;&#x456;&#x440;</trd>
  </trdgrp>
</drv>
</art>
