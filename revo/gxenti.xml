<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap><ofc>*</ofc> <rad>&gcirc;entil</rad>/a</kap>
<drv mrk="gxenti.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc>
    <dif>
      Observanta la sociajn decojn, bonmaniere afabla:
      <ekz>
        <tld/>a homo<fnt>B</fnt>, konduto, ago;
      </ekz>
      <ekz>
        &ccirc;e tro <tld/>a ekstero mankas sincero
        <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>;
      </ekz>
      <ekz>
        kiam malri&ccirc;a virino petos de vi trinki, vi donos &gcirc;in al
        &scirc;i <tld/>e
        <fnt><bib>F</bib>, <lok>&FE; 17</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">zdvo&rcaron;il&yacute;</trd>
  <trd lng="de">h&ouml;flich</trd>
  <trd lng="en">polite</trd>
  <trdgrp lng="fr">
    <trd>poli<klr tip="ind"> (courtois)</klr></trd>,
    <trd>courtois</trd>,
    <trd>biens&eacute;ant</trd>
  </trdgrp>
  <trd lng="nl">beleefd</trd>
  <trd lng="hu">udvarias</trd>
  <trdgrp lng="ru">
    <trd>&c_v;&c_je;&c_zh;&c_l;&c_i;&c_v;&c_y;&c_j;</trd>,
    <trd>&c_u;&c_ch;&c_t;&c_i;&c_v;&c_y;&c_j;</trd>
  </trdgrp>
</drv>

<drv mrk="gxenti.0eco">
  <kap><tld/>eco</kap>
  <snc>
    <dif>
      Konduto konforma al socia deco:
      <ekz>
        la afableco estas eco kunnaskita, la <ind><tld/>eco</ind>
        akirita
        <fnt><aut>&B;</aut><vrk>Vortaro de Esperanto</vrk></fnt>;
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>biens&eacute;ance</trd>,
    <trd>courtoisie</trd>,
    <trd>politesse</trd>
  </trdgrp>
</drv>

<drv mrk="gxenti.mal0a">
  <kap>mal<tld/>a</kap>
  <snc>
    <dif>
      Tute ne <tld/>a:
      <ekz>
        mal<tld/>a kaj fiera knabino
        <fnt><bib>F</bib>, <lok>&FE; 19</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="arogan.0a">aroganta</ref>,
      <ref cel="impert.0a">impertinenta</ref>,
      <ref cel="krud.0a">kruda</ref>.
    </refgrp>
  </snc>
  <trd lng="de">unh&ouml;flich</trd>
  <trdgrp lng="fr">
    <trd>impoli</trd>,
    <trd>discourtois</trd>,
    <trd>mals&eacute;ant</trd>
  </trdgrp>
  <trd lng="nl">onbeleefd</trd>
  <trd lng="hu">udvariatlan</trd>
  <trdgrp lng="ru">
    <trd>&c_n;&c_je;&c_v;&c_je;&c_zh;&c_l;&c_i;&c_v;&c_y;&c_j;</trd>,
    <trd>&c_n;&c_je;&c_l;&c_ju;&c_b;&c_je;&c_z;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_g;&c_r;&c_u;&c_b;&c_y;&c_j;</trd>
  </trdgrp>
</drv>

<drv mrk="gxenti.0acxa">
  <kap><tld/>a&ccirc;a</kap>
  <snc>
    <dif>
      Flate tro <tld/>a.
    </dif>
  </snc>
  <trd lng="de">schmierig <klr>(Verhalten)</klr></trd>
  <trd lng="fr">obs&eacute;quieux</trd>
  <trd lng="hu">udvariaskod&oacute;</trd>
</drv>

<drv mrk="gxenti.mal0ulo">
  <kap>mal<tld/>ulo</kap>
  <snc>
    <dif>
      Homo malafable kruda:
      <ekz>
        la mal<tld/>ulino <klr>[respondis]</klr>, el&jcirc;etante unu
        serpenton
        kaj unu ranon
        <fnt><bib>F</bib>, <lok>&FE; 21</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">malappris</trd>
  <trd lng="hu">faragatlan ember</trd>
  <trd lng="ru">&c_g;&c_r;&c_u;&c_b;&c_i;&c_ja;&c_n;</trd>
</drv>

<drv mrk="gxenti.0homo">
  <kap><tld/>homo</kap>
  <uzo tip="stl">ARK</uzo>
  <fnt><bib>PV</bib></fnt>
  <snc>
    <dif>
      <ref tip="dif" cel="gxentl.0o">&Gcirc;entlemano</ref>.
    </dif>
    <rim>
      Tiu vorto estas evidenta pa&ubreve;sa&jcirc;o de la franca, ne
      tute konforma al la Esperanta vortfarado kaj strange uzanta la
      elementon
      "homo" anstata&ubreve; "viro".
    </rim>
  </snc>
  <trdgrp lng="fr">
    <trd>gentilhomme<klr tip="ind"> (homme de bonne
    &eacute;ducation)</klr></trd>,
    <trd>gentleman<klr tip="ind"> (homme de bonne
    &eacute;ducation)</klr></trd>
  </trdgrp>
  <trd lng="nl">gentleman</trd>
  <trdgrp lng="hu">
    <trd>&uacute;riember<klr tip="ind"> (finom modor&uacute;)</klr></trd>,
    <trd>gentleman</trd>
  </trdgrp>
  <trd
  lng="ru">&c_d;&c_zh;&c_je;&c_n;&c_t;&c_l;&c_mol;&c_m;&c_je;&c_n;</trd>
</drv>
</art>
