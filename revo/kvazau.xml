    <trd>&c_n;&c_je;&c_n;&c_a;&c_ch;&c_je;&c_b;&c_t;&c_o;</trd>
  </trdgrp>
  <trdgrp lng="zh">
   <trd>&#22909;&#20687; [<ind>h&#462;oxi&agrave;ng</ind>]</trd>
   <trd>&#20284;&#20046; [<ind>s&igrave;h&#363;</ind>]</trd>
 </trdgrp>
