<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>merkatik</rad>/o <fnt><bib>PIV2</bib></fnt>
</kap>
<drv mrk="merkatik.0o">
  <kap><tld/>o</kap>
  <snc mrk="merkatik.0o.EKON">
    <uzo tip="fak">EKON</uzo>
    <dif>
      Studo de <ref tip="vid" cel="merkat.0o.EKON">merkatoj</ref> 
      por adapti komerca&jcirc;ojn kaj servojn al a&ccirc;etantoj:
      <ekz>
        politikaj respondeculoj alprenas <tld/>ajn teknikojn por 
        transformi&gcirc;i mem en produktojn
        <fnt>
          <aut>B. Stiegler, trad. J. Hasbun</aut>,
          <vrk><url ref="http://eo.mondediplo.com/article918.html">
          La deziro asfiksiata...</url></vrk>,
          <lok>le Monde diplomatique, 2004-05</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>marketing</trd>,
    <trd>mercatique</trd>
  </trdgrp>
  <trd lng="pl">marketing</trd>
</drv>

<drv mrk="merkatik.0isto">
  <kap><tld/>isto</kap>
  <snc mrk="merkatik.0isto.EKON">
    <ref tip="dif" cel="merkat.0isto.EKON">merkatisto</ref>
    <ekz>
      bona <tld/>isto kredas, ke la firmao devas servi la klientaron
      <fnt>
        <aut>D. Keefe</aut>,
        <vrk><url ref="http://www.liberafolio.org/2007/merkatigo">
        merkatigo</url></vrk>,
        <lok>libera folio, 2007-09-25</lok>
      </fnt>.
    </ekz>
  </snc>
  <trdgrp lng="fr">
    <trd>marketiste</trd>,
    <trd>mercatiste</trd>
  </trdgrp>
</drv>
</art>

