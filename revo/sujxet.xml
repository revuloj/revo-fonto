  <art mrk="$Id: sujxet.xml,v 1.8 2024/03/25 07:28:37 afido Exp $">
    <kap>
      <rad>su&jcirc;et</rad>/o <fnt><bib>NeoGlo</bib></fnt>
    </kap>
    <drv mrk="sujxet.0o">
      <kap><tld/>o</kap>
      <snc>
        <uzo tip="fak">BELE</uzo>
        <dif>
          La sinsekvo da okaza&jcirc;oj rakontataj en beletra&jcirc;o, dramo, filmo
          a&ubreve; alia verko fikcia:
          <ekz>
            multajn <tld/>ojn kaj scenojn li rekte pruntis el verkoj
            de la francaj klasikuloj
            <fnt><aut>A.S. Pu&scirc;kin, tr. N.Nekrasov</aut>:
              <vrk>E&ubreve;geno Onegin</vrk>.
              <lok>SAT, 1931. Noto pri 1:18.</lok>
            </fnt>;
          </ekz><ekz>
            tiumaniere la <tld/>o de la romano respegulas anka&ubreve; lin mem
            <fnt>
              <aut>Jobo (Julio Baghy)</aut>,
              <vrk><url ref="http://www.tekstoj.nl/lm/lm31-2/recenzo.html">Recenzo pri &leftquot;La vila mano&rightquot;</url></vrk>.
              <lok>Literatura Mondo, Feb. 1931 (p. 31-32).</lok>
            </fnt>;
          </ekz><ekz>
            usonaj filmoj ki&ccirc;igas historiajn <tld/>ojn
            <fnt><aut>Reinhard Haupenthal</aut>: <vrk>Iom pri ki&ccirc;o</vrk>.
              <bib>LOdE</bib>, <lok>2007:7</lok></fnt>.
          </ekz>
        </dif>
        <ref tip="sin" cel="fabul.0o">fabulo</ref>
        <refgrp tip="vid">
          <ref cel="motiv.cxef0o">&ccirc;efmotivo</ref>,
          <ref cel="hav.en0o">enhavo</ref>,
          <ref cel="rakont.0o">rakonto</ref>,
          <ref cel="mit.0o">mito</ref>,
          <ref cel="tem.0o.KOMUNE">temo<sncref/></ref>,
          <ref cel="histor.0o.rakonto">historio<sncref/></ref>,
          <ref cel="intrig.0o.BELE">intrigo<sncref/></ref>,
          <ref cel="faden.rugxa0o">ru&gcirc;a fadeno</ref>
        </refgrp>
      </snc>
      <trd lng="be">&c_s;&c_ju;&c_zh;&c_e;&c_t;</trd>
      <trd lng="cs">sy&zcaron;et</trd>
      <trdgrp lng="de">
        <trd>Handlung<klr> (Erz&auml;hlkunst)</klr></trd>, <trd>Motiv</trd>, <trd>Sujet</trd>
      </trdgrp>
      <trd lng="en">plot<klr> (narrative)</klr></trd>
      <trdgrp lng="fr">
        <trd>sujet<klr> (litt.)</klr></trd>,
        <trd>affabulation<klr> (de roman, r&eacute;cit)</klr></trd>
      </trdgrp>
      <trdgrp lng="nl">
        <trd>plot</trd>,
        <trd>intrige</trd>
      </trdgrp>
      <trd lng="pl">tematyka</trd>
      <trdgrp lng="ru">
        <trd>&c_f;&c_a;&c_b;&c_u;&c_l;&c_a;</trd>,
        <trd>&c_s;&c_ju;&c_zh;&c_je;&c_t;</trd>
      </trdgrp>
      <trdgrp lng="zh">
    <trd>&#x4E3B;&#x984C; <pr>zh&#x1D4;t&#xED;</pr></trd>,
    <trd>&#x4E3B;&#x9898; <pr>zh&#x1D4;t&#xED;</pr></trd>,
    <trd>&#x53D9;&#x4E8B; <pr>x&#xF9;sh&#xEC;</pr></trd>,
    <trd>&#x6558;&#x4E8B; <pr>x&#xF9;sh&#xEC;</pr></trd>
  </trdgrp>
</drv>
