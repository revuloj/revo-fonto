<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>hipereben</rad>/o
</kap>
<drv mrk="hipere.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc>
    <dif>
      <ref cel="hipere.afina0o">Afina <tld/>o</ref> a&ubreve;
      <ref cel="hipere.vektora0o">vektora <tld/>o</ref>, la&ubreve; la
      kunteksto.
    </dif>
  </snc>
  <trd lng="en">hyperplane</trd>
  <trd lng="de">Hyperebene</trd>
  <trd lng="fr">hyperplan</trd>
  <trd lng="ru">&c_g;&c_i;&c_p;&c_je;&c_r;&c_p;&c_l;&c_o;&c_s;&c_k;&c_o;&c_s;&c_t;&c_mol;</trd>
</drv>
<drv mrk="hipere.vektora0o">
  <kap>vektora <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="spac.vektorasub0o">Subspaco</ref>
      <ref cel="komple1.0a.vektorasubspaco">komplementa</ref> al
      <ref cel="rekt.vektora0o">rekto</ref>:
      <ekz>
        en tridimensiaj spacoj, la <tld/>oj estas ebenoj;
      </ekz>
      <ekz>
        en n-dimensiaj spacoj, la <tld/>oj estas &ccirc;iuj (n-1)-dimensiaj
        subspacoj;
      </ekz>
    </dif>
  </snc>
</drv>
<drv mrk="hipere.afina0o">
  <kap>afina <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="spac.afinasub0o">Subspaco</ref>, direktata de
      <ref cel="hipere.vektora0o">vektora <tld/>o</ref>.
    </dif>
  </snc>
</drv>
</art>

