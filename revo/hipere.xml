<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>hipereben</rad>/o
</kap>
<drv mrk="hipere.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>EKV</bib><lok>&para;158</lok></fnt>
  <snc>
    <dif>
      <ref cel="hipere.afina0o">Afina <tld/>o</ref> a&ubreve;
      <ref cel="hipere.vektora0o">vektora <tld/>o</ref>, la&ubreve; la
      kunteksto.
    </dif>
  </snc>
  <trd lng="en">hyperplane</trd>
  <trd lng="de">Hyperebene</trd>
  <trd lng="fr">hyperplan</trd>
  <trd lng="nl">hypervlak</trd>
  <trd lng="pt">hiperplano</trd>
  <trd lng="ru">&c_g;&c_i;&c_p;&c_je;&c_r;&c_p;&c_l;&c_o;&c_s;&c_k;&c_o;&c_s;&c_t;&c_mol;</trd>
</drv>

<drv mrk="hipere.vektora0o">
  <kap>vektora <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="spac.vektorasub0o">Vektora subspaco</ref>
      <ref cel="komple1.0a.vektorasubspaco">komplementa</ref> al
      <ref cel="rekt.vektora0o">rekto</ref>:
      <ekz>
        en tridimensiaj spacoj, la <tld/>oj estas ebenoj;
      </ekz>
      <ekz>
        en n-dimensiaj spacoj, la <tld/>oj estas &ccirc;iuj (n-1)-dimensiaj
        subspacoj;
      </ekz>
      <ekz>
        por &ccirc;iu hiperebeno ekzistas iu lineara
        <ref cel="form.0o.bildigo">formo</ref>, kies
        <ref cel="kern.0o.homomorfio">kerno</ref> &gcirc;i estas.
      </ekz>
    </dif>
  </snc>
</drv>

<drv mrk="hipere.afina0o">
  <kap>afina <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="spac.afinasub0o">Afina subspaco</ref>, direktata de
      <ref cel="hipere.vektora0o">vektora <tld/>o</ref>.
    </dif>
  </snc>
</drv>
</art>
