<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>gurd</rad>/o
</kap>
<drv mrk="gurd.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <uzo tip="fak">MUZ</uzo>
  <snc mrk="gurd.0o.MUZ">
    <dif>
      Aŭtomata <ref tip="super"
      cel="instru2.blov0o">blovinstrumento</ref>, portebla orgeneto, kiun
      sonigas trukartoj movataj per manturnata cilindro:
      <ekz>
        ĝi ludis <ctl>Ave Maria</ctl> de Gounod, kiun ludis ĉiuj <tld/>oj
        antaŭ tridek jaroj
        <fnt><bib>Kiso</bib>, <lok>Åge</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>катарынка</trd>,
    <trd>катрынка</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Leierkasten</trd>,
    <trd>Drehorgel</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>hurdy-gurdy</trd>,
    <trd>barrel organ</trd>
  </trdgrp>
  <trdgrp lng="es">
    <trd>organillo</trd>,
    <trd>cilindro</trd>
  </trdgrp>
  <trd lng="fr">orgue de Barbarie</trd>
  <trdgrp lng="hu">
    <trd>verkli</trd>,
    <trd>kintorna</trd>,
    <trd>sípláda</trd>
  </trdgrp>
  <trd lng="nl">draaiorgel</trd>
  <trd lng="pt">realejo</trd>
  <trd lng="ru">шарманка</trd>
</drv>

<drv mrk="gurd.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="gurd.0i.MUZ">
    <uzo tip="fak">MUZ</uzo>
    <dif>
      Sonigi <tld/>on:
      <ekz>
        la mizerulo <tld/>is melankolian arion.
      </ekz>
    </dif>
    <trd lng="be">граць на <ind>катрынцы</ind></trd>
    <trd lng="fr">jouer<klr tip="ind"> (sur un orgue de Barbarie)</klr></trd>
    <trdgrp lng="hu">
      <trd>verkliz</trd>,
      <trd>verklin játszik</trd>
    </trdgrp>
    <trd lng="nl">een <ind>draaiorgel</ind> bespelen</trd>
    <trd lng="pt">tocar realejo</trd>
    <trd lng="ru">играть на шарманке</trd>
  </snc>
  <snc mrk="gurd.0i.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Agi, precipe paroli aŭtomate, ripete, kvazaŭ turnante
      senpense la turnilon de <tld/>o:
      <ekz>
        <tld/>itaj <klr>(banalaj, malmulte signifaj, tede ripetitaj)</klr>
        frazoj.
      </ekz>
    </dif>
    <trd lng="be">паўтараць адно й тое ж</trd>
    <trdgrp lng="fr">
      <trd>rabâcher</trd>,
      <trd>ressasser</trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>verkliz<klr tip="ind"> (átv...)</klr></trd>,
      <trd>elcsépel<klr tip="ind"> (átv.)</klr></trd>,
      <trd>hajtogat<klr tip="ind"> (átv.)</klr></trd>
    </trdgrp>
    <trd lng="nl">tot treurens toe <ind>herhalen</ind></trd>
    <trdgrp lng="ru">
      <trd>твердить одно и то же</trd>,
      <trd>талдычить</trd>
    </trdgrp>
  </snc>
</drv>
</art>
