<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>sintagm</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>

<drv mrk="sintagm.0o">
  <kap><tld/>o</kap>
  <snc mrk="sintagm.0o.LIN">
    <uzo tip="fak">LIN</uzo>
    <ref tip="dif" cel="grup.vort0o.LIN">vortgrupo</ref>
    <ekz>
      interrompas la <tld/>on &leftquot;Potencaj ... &ccirc;evaloj&rightquot; kvin-vorta
      enkadrita <tld/>o: &leftquot;jungitaj per rimenoj kaj ferajxoj&rightquot;
      <fnt>
      <aut>Bernard Golden</aut>,
      <vrk>Instruado de bona stilo kun konsekvenca vortordo</vrk>,
      <lok>Internacia Pedagogia Revuo, 1997-3, p. 12a-15a</lok>
      </fnt>.
    </ekz>
  </snc>
  <trd lng="ca">sintagma</trd>
  <trd lng="de">Phrase<klr> (Linguistik)</klr></trd>
  <trd lng="es">sintagma</trd>
  <trd lng="fr">syntagme</trd>
  <trdgrp lng="hu">
    <trd>sz&oacute;kapcsolat</trd>,
    <trd>szintagma</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_i;&c_n;&c_t;&c_a;&c_g;&c_m;&c_a;</trd>
</drv>

<drv mrk="sintagm.0a">
  <kap><tld/>a</kap>
  <snc mrk="sintagm.0a.LIN">
    <uzo tip="fak">LIN</uzo>
    <dif>
      Rilata al kunaran&gcirc;o de vortoj en parolo, kontraste al <ref
      tip="ant"
      cel="paradi.0a">paradigma</ref>.
    </dif>
  </snc>
  <trd lng="ca">sintagm&agrave;tic</trd>
  <trd lng="es">sintagm&aacute;tico</trd>
  <trd lng="fr">syntagmatique</trd>
  <trd lng="hu">szintagmatikus</trd>
  <trd lng="ru">&c_s;&c_i;&c_n;&c_t;&c_a;&c_g;&c_m;&c_a;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
</drv>
</art>

