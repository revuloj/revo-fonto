<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>*</ofc>
      <rad>sankt</rad>/a
    </kap>
    <drv mrk="sankt.0a">
      <kap><ofc>*</ofc><tld/>a</kap>
      <snc>
        <uzo tip="fak">REL</uzo>
        <dif>
          Respekteginda pro speciala religia karaktero:
          <ekz>
            la <ind><tld/>a Skribo</ind>;
            <trd lng="ru">&c_s;&c_v;&c_ja;&c_shch;&c_je;&c_n;&c_n;&c_o;&c_je; &c_p;&c_i;&c_s;&c_a;&c_n;&c_i;&c_je;</trd>
          </ekz><ekz>
            faru <tld/>ajn vestojn por Aaron<fnt>Z</fnt>;
          </ekz><ekz>
            observu la sabaton &ccirc;ar &gcirc;i estas <tld/>a por vi<fnt>Z</fnt>;
          </ekz><ekz>
            prenu la <tld/>an oleon kaj <tld/>oleu la altaron<fnt>Z</fnt>;
          </ekz><ekz>
            <tld/>olei re&gcirc;on<fnt>Z</fnt>;
          </ekz><ekz>
            <uzo tip="fak">KAT</uzo>
            <uzo tip="fak">POL</uzo>
            la <ind><tld/>a se&gcirc;o</ind>, trono, katedro
            <klr>(papa registaro)</klr>.
            <trd lng="ru">&c_s;&c_v;&c_ja;&c_t;&c_o;&c_j; &c_p;&c_r;&c_je;&c_s;&c_t;&c_o;&c_l;</trd>
          </ekz> 
        </dif>
        <trdgrp lng="ru">
          <trd>&c_s;&c_v;&c_ja;&c_shch;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>,
          <trd>&c_s;&c_v;&c_ja;&c_t;&c_o;&c_j;</trd></trdgrp>
      </snc>
      <snc>
        <uzo tip="stl">FIG</uzo>
        <dif>
          Kvaza&ubreve;religie soleninda; plej respekteginda:
          <ekz>
            nia standardo estas por ni io <tld/>a<fnt>Z</fnt>;
          </ekz><ekz>
            <tld/>a estas por ni la hodia&ubreve;a tago<fnt>Z</fnt>;
          </ekz><ekz>
            en via bu&scirc;o la <tld/>a vorto "amo" malpuri&gcirc;as<fnt>Z</fnt>;
          </ekz><ekz>
            ho patriotismo, kiam fine via <tld/>a nomo &ccirc;esos esti
            armilo en la manoj de malhonestuloj<fnt>Z</fnt>
          </ekz>?  <ekz>
            la celo <tld/>igas la rimedojn.
          </ekz>
        </dif>
        <trdgrp lng="ru">
          <trd>&c_s;&c_v;&c_ja;&c_shch;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>,
          <trd>&c_s;&c_v;&c_ja;&c_t;&c_o;&c_j;</trd></trdgrp>
      </snc>
      <snc mrk="sankt.0a.ula">
        <uzo tip="fak">KRI</uzo>
        <dif>
          Rekonita de la Eklezio kiel publike honorinda kaj
          pre&gcirc;e alvokinda:
          <ekz>
            <tld/>a Petro;
          </ekz><ekz>
            se Dio ne volas, <tld/>ulo ne helpos<fnt>Z</fnt>;
          </ekz><ekz>
            festo de &ccirc;iuj <tld/>uloj.
          </ekz>
        </dif>
        <trd lng="ru">&c_s;&c_v;&c_ja;&c_t;&c_o;&c_j;</trd>
      </snc>
      <snc mrk="sankt.0a.semajna">
        <uzo tip="fak">KRI</uzo>
        <dif>
          La epiteto de la tagoj de la
          <ref cel="sankt.0a.semajno.KRI"><tld lit="S"/>a Semajno</ref>:
          <ekz>
            <tld lit="S"/>a &Jcirc;a&ubreve;do;
            <trd lng="en">Maundy Thursday</trd>
            <trdgrp lng="ru">
              <trd>&c_v;&c_je;&c_l;&c_i;&c_k;&c_i;&c_j; &c_ch;&c_je;&c_t;&c_v;&c_je;&c_r;&c_g;</trd>,
              <trd>&c_ch;&c_i;&c_s;&c_t;&c_y;&c_j; &c_ch;&c_je;&c_t;&c_v;&c_je;&c_r;&c_g;</trd></trdgrp>
          </ekz><ekz>
            <tld lit="S"/>a Vendredo.
            <trd lng="en">Good Friday</trd>
            <trdgrp lng="ru">
              <trd>&c_v;&c_je;&c_l;&c_i;&c_k;&c_i;&c_j; &c_p;&c_ja;&c_t;&c_o;&c_k;</trd>,
              <trd>&c_s;&c_t;&c_r;&c_a;&c_s;&c_t;&c_n;&c_a;&c_ja; &c_p;&c_ja;&c_t;&c_n;&c_i;&c_c;&c_a;</trd></trdgrp>
          </ekz>
        </dif>
        <trdgrp lng="ru">
          <trd>&c_v;&c_je;&c_l;&c_i;&c_k;&c_i;&c_j;</trd>,
          <trd>&c_s;&c_t;&c_r;&c_a;&c_s;&c_t;&c_n;&c_o;&c_j;</trd></trdgrp>
      </snc>
      <trd lng="cs">svat&yacute;</trd>
      <trd lng="en">sacred</trd>
      <trd lng="nl">heilig</trd>
    </drv>
    <drv mrk="sankt.0igi">
      <kap><tld/>igi</kap>
      <snc>
        <dif>
          Fari <tld/>a:
          <ekz>
            per &ccirc;i tiu tuko, kiu estas <tld/>igita,
            mi forpelos malproksimen de vi la malbonajn
            spiritojn
            <fnt><bib>Far1</bib>, <lok>&ccirc;ap. 12</lok></fnt>;
          </ekz><ekz>
            kiu mal<tld/>igos la sabaton, tiu mortu<fnt>Z</fnt>.
          </ekz> 
        </dif>
      </snc>
      <trd lng="nl">heiligverklaren</trd>
      <trd lng="ru">&c_o;&c_s;&c_v;&c_ja;&c_t;&c_i;&c_t;&c_mol;</trd>
    </drv>
    <drv mrk="sankt.0uligi">
      <kap><tld/>uligi<fnt>Z</fnt></kap>
      <snc>
        <dif>
          Agnoski iun sanktulo <klr>(ago de eklezio)</klr>.
        </dif>
      </snc>
      <trd lng="ru">&c_p;&c_r;&c_i;&c_ch;&c_i;&c_s;&c_l;&c_i;&c_t;&c_mol; &c_k; &c_l;&c_i;&c_k;&c_u; &c_s;&c_v;&c_ja;&c_t;&c_y;&c_h;</trd>
    </drv>
    <drv mrk="sankt.0a.semajno">
      <kap><tld lit="S"/>a Semajno</kap>
      <snc mrk="sankt.0a.semajno.KRI">
        <uzo tip="fak">KRI</uzo>
        <dif>
          La semajno kiu komenci&gcirc;as de la Palma Diman&ccirc;o kaj anta&ubreve;as
          la kristanan <ref cel="pask.0o.KRI">Paskon</ref>.
        </dif>
      </snc>
      <trd lng="en">Holy Week</trd>
      <trdgrp lng="ru">
        <trd>&c_s;&c_t;&c_r;&c_a;&c_s;&c_t;&c_n;&c_a;&c_ja; &c_n;&c_je;&c_d;&c_je;&c_l;&c_ja;</trd>,
        <trd>&c_v;&c_je;&c_l;&c_i;&c_k;&c_a;&c_ja; &c_s;&c_je;&c_d;&c_m;&c_i;&c_c;&c_a;</trd></trdgrp>
    </drv>
  </art>
