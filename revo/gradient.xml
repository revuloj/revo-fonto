<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: gradient.xml,v 1.21 2020/02/14 18:10:26 revo Exp $">
<kap>
  <rad>gradient</rad>/o
</kap>
<drv mrk="gradient.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <uzo tip="fak">FIZ</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      <klr>(de <ref tip="vid" cel="skalar.0a">skalara</ref>
      <ref cel="kamp.0o.MAT">kampo</ref>)</klr>
      <ref tip="super" cel="vektor.0a">Vektora</ref> kampo,
      kies komponantoj egalas la
      <ref cel="deriv.parta0ajxo">partajn deriva&jcirc;ojn</ref>
      de la skalaro la&ubreve; la
      <ref tip="vid" cel="koordi.0o.MAT">koordinatoj</ref>:
      <ekz>
        la <tld/>on de kampo <frm am="U"><k>U</k></frm> oni kutime
        signas per 
        <frm am="grad U">&#8711;<k>U</k></frm> a&ubreve; 
        <frm am='"grad" U = sum del_i U*e_i'
        >grad <k>U</k> =
        &#8721;&#8706;<sub><k>i</k></sub><k>U</k>&#8729;e<sub><k>i</k></sub></frm>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_g;&c_r;&c_a;&c_d;&c_y;&c_je;&c_n;&c_t;</trd>
  <trd lng="ca">gradient</trd>
  <trdgrp lng="cs">
    <trd>gradient</trd>,
    <trd>sp&aacute;d</trd>,
    <trd>stupe&ncaron;</trd>
  </trdgrp>
  <trd lng="de">Gradient</trd>
  <trd lng="en">gradient</trd>
  <trd lng="es">gradiente</trd>
  <trd lng="fa">&f_g;&a_r;&a_A;&a_d;&f_y;&a_A;&a_n;</trd>
  <trd lng="fr">gradient</trd>
  <trd lng="hu">gradiens</trd>
  <trd lng="nl">gradi&euml;nt</trd>
  <trd lng="no">gradient</trd>
  <trd lng="pl">gradient</trd>
  <trd lng="pt">gradiente</trd>
  <trd lng="ru">&c_g;&c_r;&c_a;&c_d;&c_i;&c_je;&c_n;&c_t;</trd>
  <trdgrp lng="sk">
    <trd>gradient</trd>,
    <trd>sp&aacute;d</trd>,
    <trd>stupe&ncaron;</trd>
  </trdgrp>
  <trd lng="sv">gradient</trd>
</drv>
</art>

