<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>gradient</rad>/o
</kap>
<drv mrk="gradient.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <uzo tip="fak">FIZ</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      <klr>(de <ref tip="vid" cel="skalar.0a">skalara</ref>
      <ref cel="kamp.0o.MAT">kampo</ref>)</klr>
      <ref tip="super" cel="vektor.0a">Vektora</ref> kampo,
      kies komponantoj egalas la
      <ref cel="deriv.parta0ajxo">partajn deriva&jcirc;ojn</ref>
      de la skalaro la&ubreve; la
      <ref tip="vid" cel="koordi.0o.MAT">koordinatoj</ref>:
      <ekz>
        la <tld/>on de kampo <frm><k>U</k></frm> oni kutime signas per 
        <frm>&#x2207;<k>U</k></frm> a&ubreve; 
        <frm>grad <k>U</k> =
        &#x2211;&#x2202;<sub><k>i</k></sub><k>U</k>&#8729;e<sub><k>i</k></sub></frm>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
     <trd>Gradient</trd>,
     <trd>Gef&auml;lle</trd></trdgrp>
  <trd lng="en">gradient</trd>
  <trd lng="es">gradiente</trd>
  <trd lng="fr">gradient</trd>
  <trd lng="nl">gradi&euml;nt</trd>
  <trd lng="ru">&c_g;&c_r;&c_a;&c_d;&c_i;&c_je;&c_n;&c_t;</trd>
  <trd lng="sv">gradient</trd>
</drv>
</art>

