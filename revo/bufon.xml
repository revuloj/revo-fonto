<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: bufon.xml,v 1.13 2023/10/29 19:11:04 revo Exp $">
    <kap>
      <rad>bufon</rad>/o <fnt><bib>PIV1</bib></fnt>
    </kap>

    <drv mrk="bufon.0o">
      <kap><tld/>o</kap>
      <snc mrk="bufon.0o.KOMUNE">
        <dif>
          Tia <ref tip="super" cel="amuz.0isto.KOMUNE">amuzisto</ref>,
          kiaj
          oficis en kortegoj, gajigante princojn per &scirc;ercoj,
          ironio kaj sensenca&jcirc;oj:
          <ekz>
            kiam vi <klr>...</klr> prezentas aferojn komplete fremdajn
            al la
            veraj principoj, vi montri&gcirc;as <tld/>o de <tld/>oj
            <fnt>
              <aut>Bertilo Wennergren</aut>,
              <vrk>Re: &Gcirc;avo kaj Japanio</vrk>,
              <lok>soc.culture.esperanto, 1998-04-29</lok>
            </fnt>.
          </ekz>
        </dif>
        <ref tip="vid" cel="sprit.0ulo">spritulo</ref>
      </snc>
      <trdgrp lng="be">
        <trd>&c_b;&c_l;&c_a;&c_z;&c_a;&c_n;</trd>,
        <trd>&c_b;&c_l;&c_a;&c_z;&c_je;&c_n;</trd>
      </trdgrp>
  <trd lng="ca">buf&oacute;</trd>
  <trdgrp lng="cs">
    <trd>august</trd>,
    <trd>kr&#xE1;lovsk&#xFD; &scaron;a&scaron;ek</trd>
  </trdgrp>
  <trdgrp lng="de">
        <trd>Spa&szlig;macher</trd>,
        <trd>Hofnarr</trd>
      </trdgrp>
  <trd lng="fr">bouffon</trd>
  <trd lng="he">&#x5DC;&#x5B5;&#x5D9;&#x5E6;&#x5B8;&#x5DF;</trd>
  <trd lng="hu">udvari <ind>bolond</ind></trd>
  <trd lng="pl">b&lstroke;azen</trd>
  <trd lng="ru">&c_sh;&c_u;&c_t;</trd>
  <trd lng="sk">kr&#xE1;&#x13E;ovsk&#xFD; &scaron;a&scaron;o</trd>
  <trd lng="uk">&#x431;&#x43B;&#x430;&#x437;&#x435;&#x43D;&#x44C;</trd>
  <trd lng="zh">&#x50BB;&#x5B50; <pr>sh&#x1CE;zi</pr></trd>
</drv>

    <drv mrk="bufon.0i">
      <kap><tld/>i</kap>
      <gra><vspec>ntr</vspec></gra>
      <snc mrk="bufon.0i.KOMUNE">
        <dif>
          Agi kiel <tld/>o, ridigi homojn per absurda&jcirc;oj
          kaj neatenditaj &scirc;ercoj.
        </dif>
      </snc>
      <trd lng="be">&c_b;&c_l;&c_a;&c_z;&c_n;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
      <trd lng="fr">faire le <ind>bouffon</ind></trd>
      <trd lng="hu">boh&oacute;ckodik</trd>
      <trd lng="ca">bufonejar</trd>
      <trd lng="pl">b&lstroke;aznowa&cacute;</trd>
      <trdgrp lng="ru">
        <trd>&c_sh;&c_u;&c_t;&c_je;&c_j;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>,
        <trd>&c_p;&c_a;&c_ja;&c_s;&c_n;&c_i;&c_ch;&c_a;&c_t;&c_mol;</trd>
      </trdgrp>
    </drv>

    <drv mrk="bufon.0ajxo">
      <kap><tld/>a&jcirc;o</kap>
      <snc mrk="bufon.0ajxo.KOMUNE">
        <dif>
          Vigla kaj moka a&ubreve; absurda
          <ref tip="super" cel="sxerc.0o">&scirc;erco</ref>:
          <ekz>
            nutri la fi&scirc;ojn per mono, tio estus <tld/>a&jcirc;o
            <fnt><bib>Mortul&Scirc;ip</bib>,
              <lok>dua libro, &ccirc;apitro 30a</lok></fnt>.
          </ekz>
        </dif>
      </snc>
      <trdgrp lng="be">
        <trd>&c_b;&c_l;&c_a;&c_z;&c_n;&c_a;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
        <trd>&c_b;&c_l;&c_a;&c_z;&c_mol;&c_n;&c_je;&c_r;&c_s;&c_t;&c_v;&c_a;</trd>,
        <trd>&c_b;&c_u;&c_f;&c_a;&c_n;&c_a;&c_d;&c_a;</trd>
      </trdgrp>
      <trd lng="fr">bouffonnerie</trd>
      <trd lng="hu">boh&oacute;ckod&aacute;s</trd>
      <trd lng="ca">bufonada</trd>
      <trdgrp lng="pl">
        <trd>b&lstroke;aze&nacute;stwo</trd>,
        <trd>b&lstroke;azenada</trd>
      </trdgrp>
      <trdgrp lng="ru">
        <trd>&c_sh;&c_u;&c_t;&c_o;&c_v;&c_s;&c_t;&c_v;&c_o;</trd>,
        <trd>&c_b;&c_u;&c_f;&c_f;&c_o;&c_n;&c_a;&c_d;&c_a;</trd>
      </trdgrp>
    </drv>
  </art>

