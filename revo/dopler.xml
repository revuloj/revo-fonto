<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: dopler.xml,v 1.6 2025/02/17 22:27:41 afido Exp $">
    <kap>
      <rad>Dopler</rad>/o
    </kap>

<drv mrk="dopler.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">PERS</uzo>
  <snc>
    <dif>
      <nom>Christian Doppler</nom>  (1803&#x202F;-&#x202F;1853), a&ubreve;stra matematikisto kaj
      <ref tip="lst" lst="voko:historiaj_personoj" cel="fizik.0isto">fizikisto</ref>;
      la&ubreve; nomita estas la <tld/>a efiko:
      <ekz>
        <tld lit="d"/>aj bildoj de la rotacio de la Suno
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=557236">Observatorio de Monto
          Wilson</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_D;&c_o;&c_p;&c_l;&c_je;&c_r;</trd>
    <trd lng="de">Christian <ind>Doppler</ind></trd>
    <trd lng="en">Christian <ind>Doppler</ind></trd>
    <trd lng="fr">Christian <ind>Doppler</ind></trd>
  </snc>
  <trd lng="ja">&#x30C9;&#x30C3;&#x30D7;&#x30E9;&#x30FC;</trd>
  <trd lng="pl">Christian  <ind>Doppler</ind></trd>
  <trd lng="uk">&c_D;&#x43E;&#x43F;&#x43B;&c_je;&c_r;</trd>
  <trdgrp lng="zh">
    <trd>&#x514B;&#x91CC;&#x65AF;&#29748;&#x591A;&#x666E;&#x52D2;
    <pr>k&#xE8;l&#x1D0;s&#x12B;q&#xED;ndu&#x14D;p&#x1D4;l&emacron;i</pr></trd>,
    <trd>&#x591A;&#x666E;&#x52D2; <pr>du&#x14D;p&#x1D4;l&emacron;i</pr></trd>
  </trdgrp>
</drv>

<drv mrk="dopler.0a_efiko">
  <kap>
    <tld/>a efiko
  </kap>
  <snc mrk="dopler.0a_efiko.FIZ">
    <uzo tip="fak">FIZ</uzo>
    <dif>
      <ref cel="frekve.0o.TEK">Frekvenc</ref>&scirc;ovi&gcirc;o de
      <ref tip="malprt" cel="signal.0o">signalo</ref> pro &scirc;an&gcirc;i&gcirc;anta distanco inter sendanto kaj
      ricevanto:
      <ekz>
        ekstersunsistemaj planedoj estis malkovritaj per <klr>[&#8230;]</klr>
        <tld/>a metodo <klr>[kiu detektas]</klr> la &scirc;an&gcirc;etojn en la
        rapideco de la stelo ka&ubreve;zitajn pro la gravito de la &ccirc;irka&ubreve;anta planedo
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=196974">Ekstersunsistema
          planedo</url></lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_d;&c_o;&c_p;&c_l;&c_je;&c_r;&c_a;&c_w; &c_e;&c_f;&c_e;&c_k;&c_t;</trd>
  <trd lng="de">Dopplereffekt</trd>
  <trd lng="en">Doppler effect</trd>
  <trd lng="fr">effet Doppler</trd>
  <trd lng="pl">efekt <ind>Dopplera</ind></trd>
  <trdgrp lng="zh">
    <trd>&#x591A;&#x666E;&#x52D2;&#25928;&#x5E94;
    <pr>du&#x14D;p&#x1D4;l&#xE8;xi&#xE0;oy&#xEC;ng</pr></trd>,
    <trd>&#x591A;&#x666E;&#x52D2;&#25928;&#x5E94; <pr>du&#x14D;p&#x1D4;l&emacron;ixi&#xE0;oy&#xEC;ng</pr></trd>
  </trdgrp>
</drv>
</art>

