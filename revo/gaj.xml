<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>*</ofc>
      <rad>gaj</rad>/a
    </kap>

    <drv mrk="gaj.0a">
      <kap><ofc>*</ofc><tld/>a</kap>
      <snc mrk="gaj.0a.sente">
        <uzo tip="klr">(iu)</uzo>
        <dif>
          Estanta en viva, facilanima kaj bonhumora stato, kaj
          montranta sian kontentecon per eksteraj signoj;
          ridhumora, &gcirc;ojmiena:
          <ekz>
            <tld/>a homo, <tld/>a urbo<fnt>Z</fnt>;
          </ekz><ekz>
            ni estu <tld/>aj, ni uzu bone la vivon, &ccirc;ar la
            vivo ne estas longa
            <fnt><bib>F</bib>, <lok>&FE; 20</lok></fnt>;
          </ekz><ekz>
            <tld/>e vivi.
          </ekz>
        </dif>
        <refgrp tip="vid">
          <ref cel="gxoj.0a">&gcirc;oja</ref>.
        </refgrp>
        <trdgrp lng="pt">
          <trd>alegre</trd>,
          <trd>contente</trd>,
          <trd>feliz</trd>
        </trdgrp>
      </snc>
      <snc mrk="gaj.0a.gajiga">
        <uzo tip="klr">(io)</uzo>
        <ref tip="dif" cel="gaj.0iga"><tld/>iga</ref>
        <ekz>
          <tld/>a kanto, vetero, koloro, rakonto, spektaklo;
        </ekz><ekz>
          sur la kameno brulis <tld/>a fajro<fnt>Z</fnt>.
        </ekz>
        <trd lng="pt">alegre</trd>
      </snc>
      <trd lng="be">&c_v;&c_ja;&c_s;&c_jo;&c_l;&c_y;</trd>
      <trd lng="cs">vesel&yacute;</trd>
      <trdgrp lng="de">
        <trd>fr&ouml;hlich</trd>,
        <trd>heiter</trd>,
        <trd>lustig</trd>
      </trdgrp>
      <trd lng="es">alegre</trd>
      <trdgrp lng="hu">
        <trd>v&iacute;g</trd>,
        <trd>vid&aacute;m</trd>
      </trdgrp>
      <trdgrp lng="nl">
        <trd>blij</trd>,
        <trd>vrolijk</trd>
      </trdgrp>
      <trd lng="en">gay</trd>
      <trdgrp lng="fr">
        <trd>gai</trd>,
        <trd>enjou&eacute;</trd>,
        <trd>joyeux</trd>
      </trdgrp>
      <trd lng="ru">&c_v;&c_je;&c_s;&c_jo;&c_l;&c_y;&c_j;</trd>
      <trd lng="sv">glad</trd>
    </drv>

    <drv mrk="gaj.0i">
      <kap><tld/>i</kap>
      <gra><vspec>ntr</vspec></gra>
      <snc>
        <dif>
          Esti <tld/>a.
        </dif>
        <refgrp tip="vid">
          <ref cel="rid.0i">ridi</ref>,
          <ref cel="plezur">plezuri</ref>.
        </refgrp>
      </snc>
      <trd lng="be">&c_v;&c_je;&c_s;&c_ja;&c_l;&c_ib;&c_c;&c_c;&c_a;</trd>
      <trdgrp lng="de">
        <trd>fr&ouml;hlich sein</trd>,
        <trd>heiter sein</trd>,
        <trd>sich <ind>freuen</ind></trd>
      </trdgrp>
      <trd lng="es">estar <ind>alegre</ind></trd>
      <trd lng="fr">&ecirc;tre <ind>gai</ind></trd>
      <trdgrp lng="hu">
        <trd>vid&aacute;m</trd>,
        <trd>&ouml;rvendezik</trd>
      </trdgrp>
      <trd lng="nl">blij zijn</trd>
      <trdgrp lng="pt">
        <trd>estar <ind>alegre</ind></trd>, 
        <trd>estar de <ind>bom humor</ind></trd>
      </trdgrp>
      <trdgrp lng="ru">
        <trd>&c_v;&c_je;&c_s;&c_je;&c_l;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>,
        <trd>&c_b;&c_y;&c_t;&c_mol; &c_v; &c_h;&c_o;&c_r;&c_o;&c_sh;&c_je;&c_m;
          <ind>&c_n;&c_a;&c_s;&c_t;&c_r;&c_o;&c_je;&c_n;&c_i;&c_i;</ind></trd>
      </trdgrp>
    </drv>

    <drv mrk="gaj.0igi">
      <kap><tld/>igi</kap>
      <snc>
        <dif>
          Fari iun a&ubreve; ion <tld/>a:
          <ekz>
            <tld/>igi &ccirc;iujn per spritaj &scirc;ercoj;
          </ekz><ekz>
            <tld/>igi la lecionon;
          </ekz><ekz>
            <tld/>igu vin<fnt>Z</fnt>;
          </ekz><ekz>
            grimaca <tld/>igista viza&gcirc;o.
          </ekz>
        </dif>
      </snc>
      <trd lng="be">&c_v;&c_je;&c_s;&c_ja;&c_l;&c_ib;&c_c;&c_mol;</trd>
      <trdgrp lng="de">
        <trd>erheitern</trd>,
        <trd>aufheitern</trd>
      </trdgrp>
      <trd lng="es">alegrar</trd>
      <trdgrp lng="fr">
        <trd>&eacute;gayer<klr tip="ind"> (rendre gai)</klr></trd>,
        <trd>distraire</trd>,
        <trd>divertir</trd>,
        <trd>r&eacute;jouir</trd>
      </trdgrp>
      <trd lng="hu">felvid&iacute;t</trd>
      <trdgrp lng="nl">
        <trd>blij maken</trd>,
        <trd>leuk maken</trd>
      </trdgrp>
      <trd lng="pt">alegrar</trd>
      <trd lng="ru">&c_v;&c_je;&c_s;&c_je;&c_l;&c_i;&c_t;&c_mol;</trd>
    </drv>

    <drv mrk="gaj.0iga">
      <kap><tld/>iga</kap>
      <snc>
        <dif>
          Ka&ubreve;zanta <tld/>on, bonan humoron, ridon:
          <ekz>
            <tld/>iga spekta&jcirc;o.
          </ekz>
        </dif>
        <refgrp tip="vid">
          <ref cel="burles.0a">burleska</ref>,
          <ref cel="komik.0a">komika</ref>,
          <ref cel="rid">ridiga</ref>.
        </refgrp>
      </snc>
      <trdgrp lng="de">
        <trd>erheiternd</trd>,
        <trd>aufheiternd</trd>
      </trdgrp>
      <trdgrp lng="fr">
        <trd>distrayant</trd>,
        <trd>divertissant</trd>,
        <trd>r&eacute;jouissant</trd>
      </trdgrp>
      <trdgrp lng="hu">
        <trd>felvid&iacute;t&oacute;</trd>,
        <trd>&ouml;rvendetes</trd>
      </trdgrp>
      <trd lng="pt">alegre <klr tip="amb"> (que causa alegria)</klr><klr tip="ind"> (adj.)</klr></trd>
      <trd lng="nl">leuk</trd>
      <trdgrp lng="ru">
        <trd>&c_v;&c_je;&c_s;&c_je;&c_l;&c_ja;&c_shch;&c_i;&c_j;</trd>,
        <trd>&c_u;&c_v;&c_je;&c_s;&c_je;&c_l;&c_i;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
        <trd>&c_r;&c_a;&c_z;&c_v;&c_l;&c_je;&c_k;&c_a;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
      </trdgrp>
    </drv>

    <drv mrk="gaj.mal0a">
      <kap>mal<tld/>a</kap>
      <snc>
        <dif>
          En malbona humoro, ne &gcirc;uanta la cirkonstancojn:
          <ekz>
            mal<tld/>a spirito;
          </ekz><ekz>
            morte mal<tld/>a<fnt>Z</fnt>.
          </ekz>
        </dif>
      </snc>
      <trdgrp lng="be">
        <trd>&c_zh;&c_u;&c_r;&c_b;&c_o;&c_t;&c_n;&c_y;</trd>,
        <trd>&c_s;&c_u;&c_m;&c_n;&c_y;</trd>,
        <trd>&c_s;&c_m;&c_u;&c_t;&c_n;&c_y;</trd>,
        <trd>&c_m;&c_a;&c_r;&c_k;&c_o;&c_t;&c_n;&c_y;</trd>,
        <trd>&c_n;&c_u;&c_d;&c_n;&c_y;</trd>,
        <trd>&c_t;&c_u;&c_zh;&c_l;&c_ib;&c_v;&c_y;</trd>,
        <trd>&c_p;&c_a;&c_n;&c_y;&c_l;&c_y;</trd>,
        <trd>&c_p;&c_a;&c_n;&c_u;&c_r;&c_y;</trd>
      </trdgrp>
      <trd lng="es">triste</trd>
      <trdgrp lng="fr">
        <trd>triste</trd>,
        <trd>attrist&eacute;</trd>,
        <trd>morose</trd>,
        <trd>pein&eacute;</trd>
      </trdgrp>
      <trdgrp lng="hu">
        <trd>szomor&uacute;</trd>,
        <trd>b&uacute;s</trd>,
        <trd>b&aacute;natos</trd>
      </trdgrp>
      <trdgrp lng="nl">
        <trd>triest</trd>,
        <trd>bedroefd</trd>,
        <trd>verdrietig</trd>
      </trdgrp>
      <trd lng="pt">triste</trd>
      <trdgrp lng="ru">
        <trd>&c_g;&c_r;&c_u;&c_s;&c_t;&c_n;&c_y;&c_j;</trd>,
        <trd>&c_p;&c_je;&c_ch;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
      </trdgrp>
    </drv>

    <drv mrk="gaj.mal0i">
      <kap>mal<tld/>i</kap>
      <snc>
        <dif>
          Esti mal<tld/>a.
        </dif>
        <refgrp tip="vid">
          <ref cel="funebr">funebri</ref>.
        </refgrp>
      </snc>
      <trdgrp lng="be">
        <trd>&c_s;&c_u;&c_m;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>,
        <trd>&c_s;&c_m;&c_u;&c_t;&c_k;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>,
        <trd>&c_m;&c_a;&c_r;&c_k;&c_o;&c_c;&c_ib;&c_c;&c_c;&c_a;</trd>,
        <trd>&c_n;&c_u;&c_d;&c_z;&c_ib;&c_c;&c_mol;</trd>,
        <trd>&c_t;&c_u;&c_zh;&c_y;&c_c;&c_mol;</trd>,
        <trd>&c_g;&c_a;&c_r;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
      </trdgrp>
      <trdgrp lng="de">
        <trd>traurig sein</trd>,
        <trd>tr&uuml;bselig sein</trd>,
        <trd>Tr&uuml;bsal blasen</trd>
      </trdgrp>
      <trd lng="es">estar <ind>triste</ind></trd>
      <trdgrp lng="fr">
        <trd>&ecirc;tre <ind>triste</ind></trd>,
        <trd>s'<ind>attrister</ind></trd>
      </trdgrp>
      <trdgrp lng="hu">
        <trd>szomorkodik</trd>,
        <trd>b&aacute;nk&oacute;dik</trd>,
        <trd>b&uacute;slakodik</trd>
      </trdgrp>
      <trdgrp lng="nl">
        <trd>bedroefd zijn</trd>,
        <trd>treurig zijn</trd>
      </trdgrp>
      <trd lng="pt">estar <ind>triste</ind></trd>
      <trdgrp lng="ru">
        <trd>&c_g;&c_r;&c_u;&c_s;&c_t;&c_i;&c_t;&c_mol;</trd>,
        <trd>&c_p;&c_je;&c_ch;&c_a;&c_l;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
      </trdgrp>
    </drv>

    <drv mrk="gaj.mal0o">
      <kap>mal<tld/>o</kap>
      <snc>
        <dif>
          Malvigla, senplezura spirita stato.
        </dif>
      </snc>
      <trd lng="fr">tristesse</trd>
      <trdgrp lng="hu">
        <trd>szomor&uacute;s&aacute;g</trd>,
        <trd>b&aacute;nat</trd>,
        <trd>b&uacute;</trd>
      </trdgrp>
      <trd lng="pt">tristeza</trd>
      <trdgrp lng="ru">
        <trd>&c_g;&c_r;&c_u;&c_s;&c_t;&c_mol;</trd>,
        <trd>&c_p;&c_je;&c_ch;&c_a;&c_l;&c_mol;</trd>,
        <trd>&c_t;&c_o;&c_s;&c_k;&c_a;</trd>
      </trdgrp>
    </drv>

    <drv mrk="gaj.G0o">
      <kap><tld lit="G"/>o</kap>
      <uzo tip="fak">NOM</uzo>
      <snc>
        <dif>
          Latina virnomo:
          <ekz>
            <tld lit="G"/>o Julio <ref cel="cezar.0o.PERS">Cezaro</ref>;
          </ekz><ekz>
            vin salutas <tld lit="G"/>o, la gastiganto de mi
            <fnt><bib>NT</bib>, <lok>&Rom; 16:23</lok></fnt>.
          </ekz>
        </dif>
      </snc>
      <rim num="1">
        PIV2 listigas la nomon en aparta artikolo, kiel homonimon de
        la Fundamenta radiko; tamen &scirc;ajnas, ke la anta&ubreve;nomon eblas
        rigardi deriva&jcirc;o el la responda radiko; e&ccirc; se historie
        tia derivo estas dubinda, iuj homoj perceptas la nomon tiel,
        kaj tia vidpunkto estas avanta&gcirc;a por Esperanto.
        <aut>Sergio Pokrovskij</aut>
      </rim>
      <rim num="2" mrk="gaj.G0o.rimC">
        Dum sia frua periodo Latino malhavis apartan literon por [g];
        anstata&ubreve;e estis uzata C.  Kiam la romanoj elpensis diakrita&jcirc;on
        G (t.e. C kun diakrita streketo), la anta&ubreve;nomo tamen dum longa
        tempo restis &ccirc;e la tradicia skribo per C; en Esperanto estas
        nenia motivo imiti tiun misskribon, tiom malpli, ke &gcirc;i
        kolizias kun aliaj vortoj propre Esperantaj.  La skriboj kiuj
        &ccirc;iam kapablis distingi inter g kaj k (ekz-e la greka)
        konservis la &gcirc;ustan sonformon kun [g].
        <aut>Sergio Pokrovskij</aut>
      </rim>
      <trdgrp lng="en"><trd>Gaius</trd>, <trd>Caius</trd></trdgrp>
      <trdgrp lng="la">
        <trd>Caius</trd>,
        <trd>Gaius</trd>
      </trdgrp>
      <trd lng="pt">Gaio</trd>
      <trdgrp lng="ru">
        <trd>&c_G;&c_a;&c_j;</trd>,
        <trd>&c_K;&c_a;&c_j;<klr> (&c_u;&c_s;&c_t;.)</klr></trd>
      </trdgrp>
    </drv>

  </art>
