<vortaro>
<art mrk="$Id$">
  <kap><rad>e&ubreve;femism</rad>/o
    <fnt>Z</fnt></kap>

<drv mrk="euxfem.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
    <ref tip="super" cel="fraz.cxirkaux0o">&Ccirc;irka&ubreve;frazo</ref>,
    dirmaniero uzata por mildigi la krudecon de la &gcirc;usta vorto:
    <ekz>
      &leftquot;senfina dormo&rightquot; estas <tld/>o anstata&ubreve; &leftquot;morto&rightquot;;
    </ekz>
    <ekz>
      poste mi eksciis, ke la teatro estas efektiva <tld/>o
      <fnt><aut>Machado de Assis, trad. Paulo Viana</aut>
      <vrk>La divenistino kaj aliaj rakontoj</vrk><lok>Oportuno, jaro 2005a, p.
      27a</lok></fnt>.
    </ekz>
    </dif>
  </snc>
  <ref tip="sin" cel="vort.evit0o">evitvorto</ref>
  <refgrp tip="super">
  <ref cel="figur.stil0o">stilfiguro</ref>,
  <ref cel="trop.0o">tropo</ref>
  </refgrp>
  <trd lng="be">&c_e;&c_w;&c_f;&c_e;&c_m;&c_ib;&c_z;&c_m;</trd>
  <trdgrp lng="de">
    <trd>Euphemismus</trd>,
    <trd>Sch&ouml;nsprech</trd>,
    <trd>besch&ouml;nigender Ausdruck</trd>,
    <trd>verh&uuml;llender Ausdruck</trd>
  </trdgrp>
  <trd lng="es">eufemismo</trd>
  <trd lng="fr">euph&eacute;misme</trd>
  <trdgrp lng="hu">
    <trd>eufemizmus</trd>,
    <trd>euf&eacute;mia</trd>,
    <trd>sz&eacute;p&iacute;t&odblac; k&ouml;r&uuml;l&iacute;r&aacute;s</trd>
  </trdgrp>
  <trd lng="nl">eufemisme</trd>
  <trd lng="pt">eufemismo</trd>
  <trd lng="ru">&c_e;&c_v;&c_f;&c_je;&c_m;&c_i;&c_z;&c_m;</trd>
</drv>

<drv mrk="euxfem.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
    La veron mildiganta, ofte erariga vorto.
    </dif>
  </snc>
  <trd lng="be">&c_e;&c_w;&c_f;&c_e;&c_m;&c_ib;&c_s;&c_t;&c_y;&c_ch;&c_n;&c_y;</trd>
  <trdgrp lng="de">
    <trd>euphemistisch</trd>,
    <trd>besch&ouml;nigend</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>eufemisztikus</trd>,
    <trd>sz&eacute;p&iacute;t&odblac;<klr tip="ind"> (k&ouml;r&uuml;l&iacute;r&aacute;s)</klr></trd>
  </trdgrp>
  <trd lng="nl">eufemistisch</trd>
  <trd lng="pt">euf&ecirc;mico</trd>
</drv>
</art>
