<kap>
  <ofc>9</ofc><rad>e&ubreve;femism</rad>/o
  <fnt><bib>JED</bib></fnt>
</kap>
<drv mrk="euxfem.0o">
  <kap><ofc>9</ofc><tld/>o</kap>
  <snc>
    <dif>
      <ref tip="super" cel="fraz.cxirkaux0o">&Ccirc;irka&ubreve;frazo</ref>,
      vorto a&ubreve; esprimo uzata por mildeco anstata&ubreve;
      dira&jcirc;o,
      kiu povas esti rigardata kiel tro kruda, tro malagrabla, tro
      sankta a&ubreve;
      simile:
      <ekz>
        <ctl>senfina dormo</ctl> estas <tld/>o anstata&ubreve;
        <ctl>morto</ctl>
        <fnt><bib>PV</bib></fnt>,
      </ekz>
      <ekz>
        <ctl>ku&scirc;i</ctl> anstata&ubreve; <ctl>seksumi</ctl>
        <fnt><bib>OA9</bib></fnt>;
      </ekz>
      <ekz>
        poste mi eksciis, ke la teatro estas efektiva <tld/>o
        <fnt><aut>Machado de Assis, trad. Paulo Viana</aut>
        <vrk>La divenistino kaj aliaj rakontoj</vrk><lok>Oportuno,
        jaro 2005a, p. 27a</lok></fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="vort.evit0o">evitvorto</ref>
    <refgrp tip="super">
      <ref cel="figur.stil0o">stilfiguro</ref>,
      <ref cel="trop.0o">tropo</ref>
    </refgrp>
  </snc>
  <rim>
    La&#365; <fnt><bib>BL</bib></fnt>: Anka&#365; eblas diri <ke>plibeliga &#265;irka&#365;diro</ke>, <ke>evitesprimo</ke>, <ke>&#265;irka&#365;parolo</ke>, <ke>&#265;irka&#365;skribo</ke>, <ke>bonvorto</ke>, <ke>pura lingva&#309;o</ke>.
  </rim>

  <trd lng="be">&c_e;&c_w;&c_f;&c_e;&c_m;&c_ib;&c_z;&c_m;</trd>
  <trd lng="br">flourlavar</trd>
  <trd lng="ca">eufemisme</trd>
  <trdgrp lng="de">
    <trd>Euphemismus</trd>,
    <trd>Sch&ouml;nsprech</trd>,
    <trd>besch&ouml;nigender Ausdruck</trd>,
    <trd>verh&uuml;llender Ausdruck</trd>
  </trdgrp>
  <trd lng="en">euphemism</trd>
  <trd lng="es">eufemismo</trd>
  <trd lng="fr">euph&eacute;misme</trd>
  <trdgrp lng="hu">
    <trd>eufemizmus</trd>,
    <trd>euf&eacute;mia</trd>,
    <trd>sz&eacute;p&iacute;t&odblac; k&ouml;r&uuml;l&iacute;r&aacute;s
    </trd>
  </trdgrp>
  <trd lng="id">eufemisme</trd>
  <trdgrp lng="ja">
    <trd>&#23113;&#26354;&#35486;&#21477; <pr>&#12360;&#12435;&#12365;&#12423;&#12367;&#12372;&#12367;</pr></trd>,
    <trd>&#23113;&#26354;&#34920;&#29694; <pr>&#12360;&#12435;&#12365;&#12423;&#12367;&#12402;&#12423;&#12358;&#12370;&#12435;</pr></trd>,
    <trd>&#36960;&#22238;&#12375;&#12394;&#35328;&#12356;&#26041; <pr>&#12392;&#12362;&#12414;&#12431;&#12375;&#12394;&#12356;&#12356;&#12363;&#12383;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>eufemisme</trd>,
    <trd>verbloemende uitdrukking</trd>
  </trdgrp>
  <trd lng="pl">eufemizm</trd>
  <trd lng="pt">eufemismo</trd>
  <trd lng="ru">&c_e;&c_v;&c_f;&c_je;&c_m;&c_i;&c_z;&c_m;</trd>
  <trd lng="uk">&#1077;&#1074;&#1092;&#1077;&#1084;&#1110;&#1079;&#1084;</trd>
  <trdgrp lng="zh">
    <trd>&#22996;&#23113; <pr>w&#283;iw&#462;n</pr></trd>,
    <trd>&#23113;&#36766; <pr>w&#462;nc&#237;</pr></trd>,
    <trd>&#22996;&#23113; <pr>w&#275;iw&#462;n</pr></trd>
  </trdgrp>
</drv>

<drv mrk="euxfem.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Rilata al <tld/>o, estanta <tld/>o.
    </dif>
  </snc>
  <trd lng="be">
  &c_e;&c_w;&c_f;&c_e;&c_m;&c_ib;&c_s;&c_t;&c_y;&c_ch;&c_n;&c_y;</trd>
