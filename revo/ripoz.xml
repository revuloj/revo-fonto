<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
   <ofc>*</ofc>
   <rad>ripoz</rad>/i
</kap>
<drv mrk="ripoz.0i">
   <kap><ofc>*</ofc><tld/>i</kap>
   <gra><vspec>ntr</vspec></gra>
   <snc mrk="ripoz.0i.nenifari">
     <dif>
       Resti dum kelka tempo nelaborante, nenion farante, por refre&scirc;igi
       siajn fortojn:
       <ekz>
         mi estas laca, mi devas iom <tld/>i de la stre&ccirc;oj;
       </ekz>
       <ekz>
         la lando <tld/>is (&gcirc;uis pacon) dum 80 jaroj<fnt>Z</fnt>.
       </ekz>
     </dif>
     <trd lng="be">&c_a;&c_d;&c_p;&c_a;&c_ch;&c_y;&c_v;&c_a;&c_c;&c_mol;</trd>
     <trdgrp lng="de">
       <trd>ruhen</trd>,
       <trd>ausruhen</trd>
     </trdgrp>
     <trdgrp lng="nl">
       <trd>uitrusten</trd>,
       <trd>pauzeren</trd>
     </trdgrp>
     <trdgrp lng="ru">
       <trd>&c_o;&c_t;&c_d;&c_y;&c_h;&c_a;&c_t;&c_mol;</trd>,
       <trd>&c_o;&c_t;&c_d;&c_o;&c_h;&c_n;&c_u;&c_t;&c_mol;</trd>
     </trdgrp>
   </snc>
   <snc mrk="ripoz.0i.kusxi">
     <dif>
       Senmove kviete ku&scirc;i:
       <ekz>
         lia kapo <tld/>is sur lia brusto<fnt>Z</fnt>;
       </ekz>
       <ekz>
         <uzo tip="stl">FIG</uzo>
         en la koro de sa&gcirc;ulo <tld/>as <klr>(konstante
         trovi&gcirc;as)</klr> sa&gcirc;o<fnt>Z</fnt>;
       </ekz>
       <ekz>
         <uzo tip="stl">FIG</uzo>
         <tld/>purigi akvon<fnt>Z</fnt>.
       </ekz>
     </dif>
     <trd lng="be">&c_s;&c_p;&c_a;&c_ch;&c_y;&c_v;&c_a;&c_c;&c_mol;</trd>
     <trd lng="de">ruhen</trd>
     <trd lng="nl">rusten</trd>
     <trd lng="ru">&c_p;&c_o;&c_k;&c_o;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
   </snc>
   <snc mrk="ripoz.0i.morte">
     <dif>
       Resti morte ku&scirc;anta:
       <ekz>
         sub la palmoj <tld/>as la resta&jcirc;oj de viaj edzinoj<fnt>B</fnt>.
       </ekz>
     </dif>
     <trd lng="be">&c_s;&c_p;&c_a;&c_ch;&c_y;&c_v;&c_a;&c_c;&c_mol;</trd>
     <trd lng="de">ruhen</trd>
     <trd lng="nl">rusten</trd>
     <trd lng="ru">&c_p;&c_o;&c_k;&c_o;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
   </snc>
   <refgrp tip="vid">
     <ref cel="cxes.0i">&ccirc;esi</ref>,
     <ref cel="halt.0i">halti</ref>,
     <ref cel="kviet.0a">kvieta</ref>,
     <ref cel="kusx.0i">ku&scirc;i</ref>,
     <ref cel="pauxz.0i">pa&ubreve;zi</ref>
   </refgrp>
   <trd lng="cs">odpo&ccaron;inout</trd>
   <trdgrp lng="es">
     <trd>descansar</trd>,
     <trd>reposar</trd>
   </trdgrp>
   <trd lng="en">rest</trd>
   <trdgrp lng="fr">
     <trd>reposer</trd>,
     <trd>se <ind>reposer</ind></trd>
   </trdgrp>
   <trd lng="sv">vila</trd>
</drv>

<drv mrk="ripoz.0o">
   <kap><tld/>o</kap>
   <snc>
     <dif>
       Stato de iu <tld/>anta:
       <ekz>
         <ind>laboro finita, <tld/>o merita</ind>
         <trd lng="fr">apr&egrave;s l'effort le <ind>r&eacute;confort</ind></trd>
         <fnt><bib>PrV</bib></fnt>;
       </ekz>
       <ekz>
         li perdis la dorman <tld/>on<fnt>Z</fnt>.
       </ekz>
     </dif>
   </snc>
   <trd lng="fr">repos</trd>
</drv>

<drv mrk="ripoz.0ejo">
   <kap><tld/>ejo</kap>
   <snc>
     <dif>
       Loko, en kiu oni <tld/>as:
       <ekz>
         &ccirc;i tio estas Mia <tld/>ejo por eterne; &Ccirc;i tie Mi lo&gcirc;os
         <fnt><bib>MT</bib>, <lok>&Psa; 132:14</lok></fnt>;
       </ekz>
       <ekz>
         tiu promenado <tld/>igos vian cerbon.
       </ekz>
     </dif>
     <refgrp tip="vid">
       <ref cel="haven.0o">haveno</ref>,
       <ref cel="oaz.0o">oazo</ref>
     </refgrp>
   </snc>
   <trd lng="fr">lieu de <ind>repos</ind></trd>
</drv>

<drv mrk="ripoz.0igi">
   <kap><tld/>i</kap>
   <gra><vspec>tr</vspec></gra>
   <snc>
     <dif>
       Havigi al iu <tld/>on:
       <ekz>
         sur verdaj herbejoj Li <tld/>igas min, Apud trankvilaj akvoj Li
         kondukas min
         <fnt><bib>MT</bib>, <lok>&Psa; 23:2</lok></fnt>.
       </ekz>
     </dif>
   </snc>
   <trd lng="fr">faire <ind>reposer</ind></trd>
</drv>

<drv mrk="ripoz.sen0e">
   <kap>sen<tld/>e</kap>
   <snc>
     <dif>
       <ref tip="super" cel="dauxr.0e">Da&ubreve;re</ref>, sen pa&ubreve;zo a&ubreve; sufi&ccirc;a
       ripozo:
       <ekz>
         sen<tld/>e penadi.
       </ekz>
     </dif>
   </snc>
   <trd lng="fr">sans repos</trd>
</drv>
</art>
