<drv mrk="almoz.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="almoz.0o.KOMUNE">
    <dif>
      Mon<ref tip="super" cel="donac.0o">donaco</ref>, 
      <ref tip="super" cel="help.mon0o">monhelpo</ref> al malri&ccirc;ulo:
      <ekz>
        blindulo sidis apud la vojo, petante <tld/>ojn
        <fnt>
          <bib>NT</bib>
          <lok>Luko 18:35</lok>
        </fnt>;
      </ekz>
      <ekz>
        kiam vi donos <tld/>on, ne sonigu trumpeton anta&ubreve; vi, kiel faras la hipokrituloj
        en la sinagogoj
        <fnt>
          <bib>NT</bib>
          <lok>Mateo 6:2</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;i la unuan fojon etendus la manon por <tld/>o
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        for! al sanaj kaj fortaj mi <tld/>on ne donas
        <fnt>
          <bib>FK</bib>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[dum]</klr> la tuta tago neniu ion a&ccirc;etis de &scirc;i, neniu donis al &scirc;i <tld/>on
        <fnt>
          <bib>Fab2</bib>
          <lok>Knabineto kun alumetoj</lok>
        </fnt>;
      </ekz>
      <ekz>
        elpremi bagatelan <tld/>on per strata kantado
        <fnt>
          <bib>Rabistoj</bib>
          <lok>Akto Unua</lok>
        </fnt>;
      </ekz>
      <ekz>
        li trapasis la urban pordegon <klr>[&#x2026;]</klr> en la mano brunan <tld/>an telereton
        <fnt>
          <bib>IKr</bib>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>oj ne malri&ccirc;igas
        <fnt>
          <bib>PrV</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_m;&c_ib;&c_l;&c_a;&c_s;&c_mol;&c_c;&c_ib;&c_n;&c_a;</trd>, 
    <trd>&c_m;&c_ib;&c_l;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd> 
  </trdgrp>
  <trd lng="br">aluzen</trd>
  <trdgrp lng="cs">
    <trd>almu&zcaron;na</trd>,
    <trd>milodar</trd>
  </trdgrp>
  <trd lng="de">Almosen</trd>
  <trdgrp lng="en">
    <trd>alms</trd>,
    <trd>charity</trd>,
    <trd>charitable relief</trd>
  </trdgrp>
  <trd lng="es">limosna</trd>
  <trd lng="fr">aum&ocirc;ne</trd>
  <trd lng="he">&nun;&#x5B0;&dalet;&#x5B8;&bet;&#x5B8;&he;</trd>
  <trdgrp lng="id">
    <trd>amal</trd>,
    <trd>derma</trd>,
    <trd>sedekah</trd>
  </trdgrp>
  <trd lng="nl">aalmoes</trd>
  <trd lng="pl">ja&lstroke;mu&zdot;na</trd>
  <trd lng="pt">esmola</trd>
  <trd lng="ro">poman&abreve;</trd>
  <trdgrp lng="ru">
    <trd>&c_m;&c_i;&c_l;&c_o;&c_s;&c_t;&c_y;&c_n;&c_ja;</trd>,
    <trd>&c_p;&c_o;&c_d;&c_a;&c_ja;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
  <trd lng="sk">almu&zcaron;na</trd>
  <trd lng="sv">allmosa</trd>
  <trdgrp lng="uk">
    <trd>&#x43C;&#x438;&#x43B;&#x43E;&#x441;&#x442;&#x438;&#x43D;&#x44F;</trd>,
    <trd>&#x43F;&#x43E;&#x434;&#x430;&#x447;&#x43A;&#x430;</trd>
  </trdgrp>
</drv>

<drv mrk="almoz.0i">
  <kap><tld/>i, <var><kap><tld/>elpeti</kap></var></kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="almoz.0i.almozpeti">
    <dif>
      <ref tip="super" cel="pet.0i">Peti</ref> <tld/>e:
      <ekz>
        la infanoj estas devigataj <tld/>i
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="https://tekstaro.com/t?nomo=artikoloj-el-monato">Infanoj</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        li <tld/>as kiel batita hundo
        <fnt>
          <aut>Anna L&ouml;wenstein</aut>
          <vrk>La &scirc;tona urbo</vrk>
        </fnt>;
      </ekz>
      <ekz>
        mi eltiros la manon... mi <tld/>elpetos... murmuretis al si Marta
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        kiu tro ripozas, balda&ubreve; <tld/>as
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        li <tld/>e elpetadis al si panon anta&ubreve; la pordoj
        <fnt>
          <bib>Rabistoj</bib>
          <lok>Akto Dua</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_zh;&c_a;&c_b;&c_r;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>, 
    <trd>&c_h;&c_a;&c_d;&c_z;&c_ib;&c_c;&c_mol; 
      &c_p;&c_a; &c_m;&c_ib;&c_l;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>, 
    <trd>&c_p;&c_r;&c_a;&c_s;&c_ib;&c_c;&c_mol; 
      &c_m;&c_ib;&c_l;&c_a;&c_s;&c_mol;&c_c;&c_ib;&c_n;&c_u;</trd> 
  </trdgrp>
  <trd lng="br">goulenn an <ind>aluzen</ind></trd>
  <trd lng="cs">&zcaron;ebrat <klr>(o n&ecaron;co)</klr></trd>
  <trd lng="de">betteln</trd>
  <trd lng="en">beg</trd>
  <trdgrp lng="es">
    <trd>limosnar</trd>,
    <trd>pedir limosna</trd>,
    <trd>mendigar</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>demander l'<ind>aum&ocirc;ne</ind></trd>,
    <trd>mendier</trd>
  </trdgrp>
  <trd lng="he">&lamed;&qof;&bet;&ftsadi; &nun;&dalet;&bet;&vav;&tav;</trd>
  <trdgrp lng="id">
    <trd><baz>kemis</baz>mengemis</trd>,
    <trd>me<ind>minta</ind></trd>
  </trdgrp>
  <trd lng="nl">bedelen</trd>
  <trd lng="pl">&zdot;ebra&cacute;</trd>
  <trdgrp lng="pt">
    <trd>esmolar</trd>,
    <trd>pedir esmolar</trd>,
    <trd>mendigar</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_n;&c_i;&c_shch;&c_je;&c_n;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_p;&c_o;&c_p;&c_r;&c_o;&c_sh;&c_a;&c_j;&c_n;&c_i;&c_ch;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
  <trd lng="sk">&zcaron;obra&tcaron;</trd>
  <trd lng="sv">tigga</trd>
  <trdgrp lng="uk">
    <trd>&#x437;&#x43B;&#x438;&#x434;&#x430;&#x440;&#x44E;&#x432;&#x430;&#x442;&#x438;</trd>,
    <trd>&#x436;&#x435;&#x431;&#x440;&#x430;&#x447;&#x438;&#x442;&#x438;</trd>,
    <trd>&#x441;&#x442;&#x430;&#x440;&#x446;&#x44E;&#x432;&#x430;&#x442;&#x438;</trd>
  </trdgrp>
</drv>

<drv mrk="almoz.0ulo">
  <kap><tld/>ulo</kap>
  <snc mrk="almoz.0ulo.KOMUNE">
    <dif>
      Petanto pri <tld/>o:
      <ekz>
        mi renkontis sur la vojo tri <tld/>ulojn kaj donis al &ccirc;iu kvaronon da bulo kaj
        unu gro&scirc;on
        <fnt>
          <bib>ElektFab</bib>
          <lok>Kamarado Gaja</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi, <tld/>ulo, estas e&ccirc; por danko tro malri&ccirc;a
        <fnt>
          <bib>Hamlet</bib>
        </fnt>;
      </ekz>
      <ekz>
        <nom>Tolstoj</nom> haltis kaj donis el sia monujo du ar&gcirc;entajn monerojn <klr>[&#x2026;]</klr> al
        la <tld/>ulo, kiu surprizita pro la malavara donaco plenigis lian manon per
        kisoj
        <fnt>
          <bib>Voja&gcirc;Imp</bib>
        </fnt>;
      </ekz>
      <ekz>
        kvankam li estas preska&ubreve; <tld/>ulo, sed li alportas al la urbo re&gcirc;an donacon: li
        proponas al &gcirc;i sian projekton
        <fnt>
          <bib>FK</bib>
        </fnt>;
      </ekz>
      <ekz>
        almena&ubreve; trovas bonegan pretekston por forpeli el mia domo tiun almozulinon; &ccirc;ar
        mi &ccirc;iam timis, ke mi estos devigata nomi &scirc;in iam: mia filino
        <fnt>
          <bib>KPr</bib>
        </fnt>;
      </ekz>
      <ekz>
        la pastro klini&gcirc;is &gcirc;is la tero, prenis, sen vorto, la <tld/>ulan pladeton kaj
        revenis vila&gcirc;on
        <fnt>
          <bib>IKr</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_zh;&c_a;&c_b;&c_r;&c_a;&c_k;</trd>
  <trd lng="bo">&t_sa;&t_pata;&t_rata;&t_nga;&t_tsheg;&t_pa;&t_naro;&t_tsheg;</trd>
  <trdgrp lng="br">
    <trd>klasker-bara</trd>,
    <trd>klasker-boued</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>almu&zcaron;n&iacute;k</trd>,
    <trd>&zcaron;ebr&aacute;k</trd>
  </trdgrp>
  <trd lng="de">Bettler</trd>
  <trd lng="en">beggar</trd>
  <trdgrp lng="es">
    <trd>limosnero</trd>,
    <trd>pordiosero</trd>,
    <trd>mendigo</trd>
  </trdgrp>
  <trd lng="fr">mendiant</trd>
  <trd lng="he">&qof;&#x5B7;&bet;&#x5BC;&#x5B0;&tsadi;&#x5B8;&fnun;</trd>
  <trdgrp lng="id">
    <trd><baz>kemis</baz> pengemis</trd>,
    <trd>pe<ind>minta</ind>-minta</trd>
  </trdgrp>
  <trd lng="nl">bedelaar</trd>
  <trd lng="pl">&zdot;ebrak</trd>
  <trdgrp lng="pt">
    <trd>mendigo</trd>,
    <trd>pedinte</trd>
  </trdgrp>
  <trd lng="ru">&c_n;&c_i;&c_shch;&c_i;&c_j;</trd>
  <trd lng="sk">&zcaron;obr&aacute;k</trd>
  <trd lng="sv">tiggare</trd>
  <trdgrp lng="uk">
    <trd>&#x436;&#x435;&#x431;&#x440;&#x430;&#x43A;</trd>,
    <trd>&#x441;&#x442;&#x430;&#x440;&#x435;&#x446;&#x44C;</trd>
  </trdgrp>
</drv>

