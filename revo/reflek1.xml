<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: reflek1.xml,v 1.26 2023/10/20 19:20:37 revo Exp $">
<kap>
  <rad>refleksiv</rad>/o
</kap>
<drv mrk="reflek1.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">GRA</uzo>
  <snc>
    <dif>
      Persona pronomo a&ubreve; poseda adjektivo, kiu resendas al la
      subjekto de la koncerna ago:
    </dif>
    <ekz>
      en Esperanto la <tld/>oj <ctl>si</ctl> kaj <ctl>sia</ctl> estas
      uzataj nur &ccirc;e la tria persono.
    </ekz>
  </snc>
  <trd lng="cs">zvratn&eacute; z&aacute;jmeno</trd>
  <trd lng="es">reflexivo</trd>
  <trd lng="fr">pronom r&eacute;fl&eacute;chi</trd>
  <trd lng="hu">visszahat&oacute; <ind>n&eacute;vm&aacute;s</ind></trd>
  <trd lng="ja">&#x518D;&#x5E30;&#x4EE3;&#x540D;&#x8A5E;  <pr>&#x3055;&#x3044;&#x304D;&#x3060;&#x3044;&#x3081;&#x3044;&#x3057;</pr></trd>
  <trd lng="nl">wederkerend <ind>voornaamwoord</ind></trd>
  <trd lng="pl">zaimek zwrotny</trd>
  <trdgrp lng="ru">
    <trd>&c_v;&c_o;&c_z;&c_v;&c_r;&c_a;&c_t;&c_n;&c_y;&c_j; &c_z;&c_a;&c_l;&c_o;&c_g;</trd>,
    <trd>&c_v;&c_o;&c_z;&c_v;&c_r;&c_a;&c_t;&c_n;&c_o;&c_je; &c_m;&c_je;&c_s;&c_t;&c_o;&c_i;&c_m;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
  <trd lng="sk">zvratn&eacute; z&aacute;meno</trd>
  <trd lng="uk">&c_z;&c_v;&#x43E;&c_r;&#x43E;&c_t;&#x43D;&c_i;&c_j; &c_z;&c_a;&c_j;&#x43C;&c_je;&#x43D;&#x43D;&c_i;&#x43A;</trd>
</drv>

<drv mrk="reflek1.0a">
  <kap><tld/>a</kap>
  <snc mrk="reflek1.0a.GRA">
    <uzo tip="fak">GRA</uzo>
    <dif>
      Rilata al <tld/>o:
    </dif>
    <ekz>
      <ind><tld/>a pronomo</ind>;
      <trd lng="hu">visszahat&oacute; <ind>n&eacute;vm&aacute;s</ind></trd>
    </ekz>
    <ekz>
      <ind><tld/>a poseda adjektivo</ind>.
      <trd lng="hu">jelz&odblac;i birtokos <ind>n&eacute;vm&aacute;s</ind></trd>
    </ekz>
    <trdgrp lng="de">
      <trd>Reflexivpronomen</trd>,
      <trd>r&uuml;ckbez&uuml;gliches <ind>F&uuml;rwort</ind></trd>
    </trdgrp>
    <trdgrp lng="fr">
       <trd>r&eacute;fl&eacute;chi</trd>,
       <trd>r&eacute;flexif<klr tip="ind"> (gramm.)</klr></trd>
    </trdgrp>
    <trd lng="hu">visszahat&oacute;</trd>
    <trd lng="pl">zaimkowy</trd>
    <trd lng="ru">&c_v;&c_o;&c_z;&c_v;&c_r;&c_a;&c_t;&c_n;&c_y;&c_j;</trd>
  </snc>
  <snc mrk="reflek1.0a.MAT">
    <uzo tip="fak">MAT</uzo>
    <subsnc mrk="reflek1.0a.rilato">
      <fnt><bib>PIV1</bib><lok>rilato</lok></fnt>
      <dif>
        <klr>(p.p. <ref cel="rilat.interna0o">interna rilato</ref>
        <frm am="bb R"><g>R</g></frm>)</klr>
        Tia, ke la <ref cel="rilat.idento0o">idento-rilato</ref> estas
        subaro de <frm am="bb R"><g>R</g></frm>;
        simb. <frm am="&quot;id&quot;_(bb E) sub bb R">id<sub><g>E</g></sub>&#x2282;<g>R</g></frm>:
        <ekz>
          la <ref cel="rilat.idento0o">idento-rilato</ref> estas
          <tld/>a;
        </ekz>
        <ekz>
          <frm am="bb R"><g>R</g></frm> estas <tld/>a, se kaj nur se por
          &ccirc;iu
          elemento <frm am="x"><k>x</k></frm> veras
          <frm am="x bb R x"><k>x</k><g>R</g><k>x</k></frm>.
        </ekz>
      </dif>
      <trd lng="fr"><klr tip="amb">(relation) </klr>r&eacute;flexive</trd>
      <trdgrp lng="pl">
        <trd><klr tip="amb">(relacja) </klr>zwrotna</trd>,
        <trd><klr tip="amb">(relacja) </klr>refleksywna</trd></trdgrp>
    </subsnc>
    <subsnc mrk="reflek1.0a.spaco">
      <dif>
        <klr>(p.p. <ref cel="spac.normohava0o">normohava
        spaco</ref>)</klr>
        Tia, ke ekzistas <ref cel="izomor1.0o">izomorfio</ref> inter &gcirc;i
        kaj &gcirc;ia <ref cel="dual.topologiadu0o">topologia dudualo</ref>.
      </dif>
      <trd lng="fr"><klr tip="ind">(espace) </klr>r&eacute;flexif</trd>
      <trd lng="pl"><klr tip="ind">(przestrze&nacute;) </klr>refleksywna</trd>
    </subsnc>
    <trd lng="de">reflexiv</trd>
    <trd lng="en">reflexive</trd>
    <trd lng="ru">&c_r;&c_je;&c_f;&c_l;&c_je;&c_k;&c_s;&c_i;&c_v;&c_n;&c_y;&c_j;</trd>
  </snc>
  <trd lng="cs">zvratn&yacute;</trd>
  <trd lng="es">reflexivo</trd>
  <trd lng="hu">reflex&iacute;v</trd>
  <trd lng="nl">reflexief</trd>
  <trd lng="sk">zvratn&yacute;</trd>
</drv>

<drv mrk="reflek1.mal0a">
  <kap>mal<tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib><lok>rilato</lok></fnt>
  <snc mrk="reflek1.mal0a.rilato">
    <dif>
      <klr>(p.p. <ref cel="rilat.interna0o">interna rilato</ref>
      <frm am="bb R"><g>R</g></frm>)</klr>
      Tia, ke &gcirc;ia <ref cel="komun.0ajxo.aro">komuna&jcirc;o</ref>
      kun la <ref cel="rilat.idento0o">idento-rilato</ref> estas
      malplena;
      simb. <frm am="bb R nn &quot;id&quot;_(bb E)=O/"><g>R</g>&#x2229;id<sub><g>E</g></sub> = &#x2205;</frm>:
      <ekz>
        la rilato <ctl>strikte pli granda ol</ctl> estas mal<tld/>a.
      </ekz>
    </dif>
    <trd lng="fr"><klr tip="amb">(relation) </klr>antir&eacute;flexive</trd>
    <trd lng="pl"><klr tip="amb">(relacja) </klr>przeciwzwrotna</trd>
  </snc>
  <trd lng="cs">antireflexivn&iacute;</trd>
  <trd lng="de">antireflexiv</trd>
  <trd lng="en">antireflexive</trd>
  <trd lng="hu">irreflex&iacute;v</trd>
  <trd lng="ru">&c_a;&c_n;&c_t;&c_i;&c_r;&c_je;&c_f;&c_l;&c_je;&c_k;&c_s;&c_i;&c_v;&c_n;&c_y;&c_j;</trd>
  <trd lng="sk">antireflex&iacute;vny</trd>
</drv>
</art>
