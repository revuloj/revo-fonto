<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>refleksiv</rad>/o
</kap>
<drv mrk="reflek1.0o">
   <kap><tld/>o</kap>
   <uzo tip="fak">GRA</uzo>
   <snc>
     <dif>
       Persona pronomo a&ubreve; poseda adjektivo, kiu resendas al la
       subjekto de la koncerna ago:
     </dif>
     <ekz>
       en Esperanto la <tld/>oj <ctl>si</ctl> kaj <ctl>sia</ctl> estas
       uzataj nur &ccirc;e la tria persono.
     </ekz>
   </snc>
</drv>

<drv mrk="reflek1.0a">
   <kap><tld/>a</kap>
   <snc num="1">
     <uzo tip="fak">GRA</uzo>
     <dif>
       Rilata al <tld/>o:
     </dif>
     <ekz>
       <tld/>a pronomo;
     </ekz>
     <ekz>
       <tld/>a poseda adjektivo.
     </ekz>
   </snc>

   <snc num="2">
     <uzo tip="fak">MAT</uzo>
     <ref tip="vid" cel="rilat.refleksiva0o">refleksiva rilato</ref>
   </snc>
</drv>

</art>

