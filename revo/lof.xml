<kap>
  <rad>lof</rad>/o
</kap>
<drv mrk="lof.0o">
  <kap>
    <tld/>o
  </kap>
  <snc>
    <dif>
      La <ref tip="super" cel="flank.0o.direkto">flanko</ref>
      direktita al la vento:
      <ekz>
        leo (a&ubreve; mal<tld/>o) estas la kontra&ubreve;a flanko, turnita for de la
        vento
        <klr>[&#x2026;]</klr> &scirc;ipoj en <tld/>-pozicio povas pli facile manovri,
        do libere
        proksimi&gcirc;i a&ubreve; malproksimi&gcirc;i al la malamika &scirc;ipo, dum &scirc;ipo en
        le-pozicio povas
        alproksimi&gcirc;i al la malamika &scirc;ipo nur kontra&ubreve; la vento
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=235286">Lofo kaj leo</url></lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Luv</trd>
  <trdgrp lng="fr">
    <trd>louvoiement</trd>,
    <trd>louvoyage</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>strona nawietrzna</trd>,
    <trd>burta nawietrzna</trd>
  </trdgrp>   
  <trdgrp lng="ro">
    <trd>direc&#x21B;ia v&acirc;ntului</trd>,
    <trd>partea windward</trd>
  </trdgrp>
</drv>

<drv mrk="lof.0i">
  <kap>
    <tld/>i
  </kap>
  <gra><vspec>tr</vspec></gra>
    <snc>
    <uzo tip="fak">MAR</uzo>
    <dif>
      Direkti la &scirc;ipon pli proksimen al la direkto de la vento.
    </dif>
  </snc>
  <trdgrp lng="de">
     <trd>anluven</trd>,
     <trd>luven</trd>,
     <trd>windw&auml;rts <ind>gehen</ind></trd>
  </trdgrp>
  <trd lng="en">luff</trd>
  <trd lng="es">orzar</trd>
  <trd lng="fr">louvoyer<klr> (pr&egrave;s du vent)</klr></trd>
  <trdgrp lng="hu">
     <trd>sz&eacute;lnek tart</trd>,
     <trd>sz&eacute;lbe fordul</trd>,
     <trd>luvol</trd>
  </trdgrp>  
  <trd lng="ja">&#x8239;&#x9996;&#x3092;&#x98A8;&#x4E0A;&#x306B;&#x3080;&#x3051;&#x308B;  <pr>&#x305B;&#x3093;&#x3057;&#x3085;&#x3092;&#x304B;&#x3056;&#x304B;&#x307F;&#x306B;&#x3080;&#x3051;&#x308B;</pr></trd>
  <trd lng="nl">loeven</trd>
  <trd lng="pl">&zdot;eglowa&cacute;</trd>
  <trd lng="pt">or&ccedil;ar</trd>
  <trd lng="ro">naviga</trd>
  <trdgrp lng="ru">
    <trd>&c_i;&c_d;&c_t;&c_i; &c_p;&c_r;&c_o;&c_t;&c_i;&c_v; &c_v;&c_je;&c_t;&c_r;&c_a;</trd>,
    <trd>&c_i;&c_d;&c_t;&c_i; &c_v; &c_b;&c_je;&c_j;&c_d;&c_je;&c_v;&c_i;&c_n;&c_d;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x442;&#x440;&#x438;&#x43C;&#x430;&#x442;&#x438; &#x43A;&#x440;&#x443;&#x442;&#x456;&#x448;&#x435;</trd>,
    <trd>&#x441;&#x442;&#x430;&#x432;&#x438;&#x442;&#x438;/&#x43F;&#x43E;&#x432;&#x435;&#x440;&#x442;&#x430;&#x442;&#x438; &#x434;&#x43E; &#x432;&#x456;&#x442;&#x440;&#x443; (&#x43A;&#x43E;&#x440;&#x430;&#x431;&#x435;&#x43B;&#x44C;)</trd>
  </trdgrp>
</drv>
</art>
