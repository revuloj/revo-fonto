<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: fabul.xml,v 1.3 2024/01/04 08:30:18 afido Exp $">
<kap>
    <rad>fabul</rad>/o <fnt><bib>NePiv</bib></fnt>
</kap>
<drv mrk="fabul.0o">
  <kap><tld/>o</kap>
  <snc mrk="fabul.0o.BELE">
    <uzo tip="fak">BELE</uzo>
    <dif>
      <ref tip="dif" cel="sujxet.0o">Su&jcirc;eto</ref>:
      <ekz>
        Gabriel Garc&iacute;a M&aacute;rquez elverkis en 1967 sian pej ambician romanon,
        jam nun klasikan, per mirakle frapaj <tld/>o kaj stilo
        <fnt>
          <aut>J. Camacho</aut>
          <vrk>Prefaco</vrk>
          <lok>en: Cent jaroj da soleco, 1992</lok>
        </fnt>;
      </ekz>
      <ekz>
        la romano estas bone konstruita <klr>[&#8230;]</klr>
        pli kaj pli, la&ubreve; la plulegado, la <tld/>o montri&gcirc;as trapensita, bone planita
        <fnt>
          <aut>C. Declerck</aut>
          <vrk><url ref="http://www.monato.be/2009/009758.php">
          Panoramo de la Nerona Romo</url></vrk>
          <lok>Monato, 2009:5, p. 22a</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_f;&c_a;&c_b;&c_u;&c_l;&c_a;</trd>
      <trd lng="cs">sy&zcaron;et</trd>
      <trdgrp lng="de">
        <trd>Handlung<klr> (Erz&auml;hlkunst)</klr></trd>, <trd>Motiv</trd>, <trd>Sujet</trd>
      </trdgrp>
      <trd lng="en">plot<klr> (narrative)</klr></trd>
      <trdgrp lng="fr">
        <trd>sujet<klr> (litt.)</klr></trd>,
        <trd>affabulation<klr> (de roman, r&eacute;cit)</klr></trd>
      </trdgrp>
      <trdgrp lng="nl">
        <trd>plot</trd>,
        <trd>intrige</trd>
      </trdgrp>
      <trdgrp lng="ru">
        <trd>&c_f;&c_a;&c_b;&c_u;&c_l;&c_a;</trd>,
        <trd>&c_s;&c_ju;&c_zh;&c_je;&c_t;</trd>
      </trdgrp>
  <trd lng="zh">&#x60C5;&#x7BC0; <pr>q&#xED;ngji&#xE9;</pr></trd>
</drv>
</art>

