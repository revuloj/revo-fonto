<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <rad>stafet</rad>/o
    </kap>

    <drv mrk="stafet.0o">
      <kap><tld/>o</kap>
      <snc mrk="stafet.0o.konkuro">
        <uzo tip="fak">SPO</uzo>
        <dif>
          Teama sporta konkuro (kura, na&gcirc;a, skia ktp), en kiu la
          teamanoj unu post alia trapasas la etapojn, transdonate la
          vicon per enmanigo de bastoneto a&ubreve; per simpla ektu&scirc;o:
          <ekz>
            ebenkura <tld/>o 4 po 400
            <klr>(en la kvarhomaj teamoj la teamanoj kuras po 400 metrojn)</klr>
          </ekz>
        </dif>
        <trd lng="be">&c_e;&c_s;&c_t;&c_a;&c_f;&c_e;&c_t;&c_a;</trd>
        <trdgrp lng="de">
          <trd>Stafette</trd>,
          <trd>Staffel</trd>
        </trdgrp>
        <trd lng="en">relay race</trd>
        <trdgrp lng="hu">
          <trd>v&aacute;lt&oacute;</trd>,
          <trd>staf&eacute;ta</trd>
        </trdgrp>
        <trd lng="nl">estafette</trd>
        <trd lng="ru">&c_e;&c_s;&c_t;&c_a;&c_f;&c_je;&c_t;&c_a;</trd>
      </snc>
      <snc mrk="stafet.0o.ano">
        <uzo tip="fak">SPO</uzo>
        <ref tip="dif" cel="stafet.0ano"><tld/>ano</ref>
      </snc>
      <snc mrk="stafet.0o.kuriero">
        <uzo tip="fak">MIL</uzo>
        <uzo tip="stl">RAR</uzo>
        <uzo tip="stl">EVI</uzo>
        <dif>
          Rajdanto kiu portas ordonojn a&ubreve; leterojn.
        </dif>
        <refgrp tip="sin">
          <ref cel="kurier.0o">kuriero</ref>,
          <ref cel="kur">kuristo</ref>.
        </refgrp>
        <trdgrp lng="be">
          <trd>&c_g;&c_a;&c_n;&c_je;&c_c;</trd>, 
          <trd>&c_k;&c_u;&c_r;'&c_je;&c_r;</trd>, 
          <trd>&c_p;&c_a;&c_s;&c_y;&c_l;&c_mol;&c_n;&c_y;</trd>
        </trdgrp>
        <trd lng="de">Meldereiter</trd>
        <trdgrp lng="en">
          <trd>courier</trd>,
          <trd>dispatch rider</trd>,
          <trd>messenger</trd>
        </trdgrp>
        <trd lng="hu">lovas <ind>fut&aacute;r</ind></trd>
        <trd lng="nl">koerier</trd>
        <trdgrp lng="ru">
          <trd>&c_g;&c_o;&c_n;&c_je;&c_c;</trd>,
          <trd>&c_k;&c_u;&c_r;&c_mol;&c_je;&c_r;</trd>
        </trdgrp>
      </snc>
    </drv>

    <drv mrk="stafet.0ano">
      <kap><tld/>ano</kap>
      <snc>
        <uzo tip="fak">SPO</uzo>
        <dif>
          Partoprenanto de <tld/>o.
        </dif>
      </snc>
      <trd lng="ru">&c_u;&c_ch;&c_a;&c_s;&c_t;&c_n;&c_i;&c_k; <ind>&c_e;&c_s;&c_t;&c_a;&c_f;&c_je;&c_t;&c_y;</ind></trd>
    </drv>

    <drv mrk="stafet.0isto">
      <kap><tld/>isto</kap>
      <snc>
        <uzo tip="fak">SPO</uzo>
        <ref tip="dif" cel="stafet.0ano"><tld/>ano</ref>
        <ekz>
          pro la mistrafoj la <tld/>isto devas fari punajn rondkurojn
          &ccirc;irka&ubreve; la pafejo
          <fnt>
            <aut>Tibor Ujlaky-Nagy</aut>:
            <vrk>La sporta lingvo en Esperanto</vrk>.
            <lok><url ref="http://www.freeweb.hu/eventoj/steb/sportalingvo.rtf"
                >Hungara Esperanto-Asocio, 1972</url></lok>
          </fnt>.
        </ekz>
      </snc>
    </drv>

    <drv mrk="stafet.0bastono">
      <kap><tld/>bastono</kap>
      <snc>
        <uzo tip="fak">SPO</uzo>
        <dif>
          Ligna a&ubreve; metala tubo, proksimume 30 centimetrojn longa,
          almena&ubreve; 50 gramojn peza, glata, amba&ubreve;ekstreme fermita,
          uzata kiel materia atestilo de vicotransdono inter la
          samteamaj <tld/>anoj:
          <ekz>
            <uzo tip="stl">FIG</uzo>
            mi kredas, ke en estonteco iu agemulo transprenos
            la <tld/>bastonon de <ctl>Bazaro</ctl> kaj reaperigos
            &ccirc;i-bultenon
            <fnt>
              <vrk>BAZARO, la adia&ubreve;a</vrk>.
              <lok><url
 ref="http://www.gazetejo.org/system/files/gazetoj/Informilo29.pdf"
                  >Informilo de &Gcirc;emelaj Urboj</url></lok>
            </fnt>.
          </ekz>
        </dif>
      </snc>
      <trd lng="ru">&c_e;&c_s;&c_t;&c_a;&c_f;&c_je;&c_t;&c_n;&c_a;&c_ja; &c_p;&c_a;&c_l;&c_o;&c_ch;&c_k;&c_a;</trd>
    </drv>

  </art>
