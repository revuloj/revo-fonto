<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>koler</rad>/i
</kap>
<drv mrk="koler.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>x</vspec></gra>
  <snc>
    <dif>
      Senti fortan agiton de la animo kontra&ubreve; iu, kiu ofendis
      a&ubreve; malkontentigis nin: 
      <ekz><tld/>i iun<fnt>Z</fnt>,</ekz>
      <ekz>kontra&ubreve; iu<fnt>Z</fnt></ekz>;
      <ekz>la batalantoj <tld/>kriis.</ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="bol.0i">boli</ref>,
      <ref cel="flam.0igxi">flami&gcirc;i</ref>,
      <ref cel="eksplo.0i">eksplodi</ref>,
      <ref cel="furioz.0i">furiozi</ref>.
    </refgrp>
  </snc>
  <trd lng="cs">zlobit se</trd>
  <trd lng="en">angry</trd>
  <trdgrp lng="nl">
    <trd>kwaad zijn</trd>,
    <trd>boos zijn</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_s;&c_je;&c_r;&c_d;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_z;&c_l;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_g;&c_n;&c_je;&c_v;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>
  </trdgrp>
  <trdgrp lng="de">
      <trd>w&uuml;tend sein</trd>,
      <trd>w&uuml;ten</trd>,
      <trd><klr>(jemandem) </klr>b&ouml;se sein</trd>,
      <trd>zornig sein</trd>
  </trdgrp>
  <trd lng="vo">vut&ouml;n</trd>
</drv>
<drv mrk="koler.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Sento de tiu, kiu <tld/>as:
      <ekz>milda respondo kvietigas <tld/>on;</ekz>
      <ekz><tld/>o estas mallonga frenezo;</ekz>
      <ekz>eksciti, inciti ies <tld/>on<fnt>Z</fnt>;</ekz>
      <ekz>montri, aperigi sian <tld/>on<fnt>Z</fnt>.</ekz>
    </dif>
  </snc>
  <trd lng="nl">woede</trd>
  <trdgrp lng="nl">
    <trd>boosheid</trd>,
    <trd>woede</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_z;&c_l;&c_o;&c_b;&c_a;</trd>,
    <trd>&c_z;&c_l;&c_o;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_g;&c_n;&c_je;&c_v;</trd>
  </trdgrp>
  <trdgrp lng="de">
      <trd>Wut</trd>,
      <trd>Zorn</trd>
  </trdgrp>
  <trd lng="vo">vut</trd>
</drv>
<drv mrk="koler.0igi">
  <kap><tld/>igi<fnt>Z</fnt></kap>
  <snc>
    <dif>
      Fari, ke iu <tld/>u. 
    </dif>
  </snc>
  <trd lng="nl">kwaad maken</trd>
  <trdgrp lng="ru">
    <trd>&c_z;&c_l;&c_i;&c_t;&c_mol;</trd>,
    <trd>&c_s;&c_je;&c_r;&c_d;&c_i;&c_t;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="de">
      <trd>w&uuml;tend machen</trd>,
      <trd>aufregen</trd>,
      <trd>zornig machen</trd>
  </trdgrp>
</drv>

<drv mrk="koler.0ema">
  <kap><tld/>ema<fnt>Z</fnt></kap>
  <snc>
    <dif>
      Facile <tld/>anta. 
    </dif>
  </snc>
  <trd lng="nl">opvliegend</trd>
  <trdgrp lng="de">
      <trd>schnell durch die Decke</trd>,
      <trd>empfindlich</trd>,
      <trd>schnell zornig</trd>
  </trdgrp>
</drv>

<drv mrk="koler.0etigi">
  <kap><tld/>etigi</kap>
  <snc>
    <dif>
      Piki, inciteti. 
    </dif>
  </snc>
  <trd lng="nl">plagen</trd>
  <trd lng="ru">&c_r;&c_a;&c_z;&c_d;&c_r;&c_a;&c_zh;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="de">
      <trd>necken</trd>,
      <trd>&auml;rgern</trd>,
      <trd>stipfen<klr> [sudgermane]</klr></trd>
  </trdgrp>
</drv>
<drv mrk="koler.sen0igxi">
  <kap>sen<tld/>i&gcirc;i</kap>
  <snc>
    <dif>
      Trankvili&gcirc;i; forlasi sian <tld/>on.  
    </dif>
  </snc>
  <trdgrp lng="de">
      <trd>sich <ind>abregen</ind></trd>,
      <trd>sich <ind>beruhigen</ind></trd>
  </trdgrp>
</drv>
</art>
