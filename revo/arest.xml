<drv mrk="arest.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="arest.0i.JUR">
    <uzo tip="fak">JUR</uzo>
    <dif>
      <ref tip="prt" cel="kapt.0i.teni">Kapti</ref> kaj 
      <ref tip="prt" cel="fiks.0i.flagon">fiksi</ref> iun por lin 
      <ref tip="sin" cel="liber.mal0igi">malliberigi</ref>:
      <ekz>
        Herodo jam <tld/>is Johanon kaj ligis lin kaj metis lin en malliberejon
        <fnt>
          <bib>NT</bib>
          <lok>Mateo 14:3</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[li]</klr> rakontis al &scirc;i, ke Arturon <tld/>is la polico, ke li estis du a&ubreve;
        tri semajnojn en la malliberejo, el kiu li lerte forkuris kaj malaperis
        <fnt>
          <bib>FK</bib>
        </fnt>;
      </ekz>
      <ekz>
        du tagojn la soldatoj tenis min <tld/>ita
        <fnt>
          <bib>Far3</bib>
          <lok>&Ccirc;apitro XVI</lok>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        ha, la morto <tld/>as tre rapide...
        <fnt>
          <bib>Hamlet</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="prizon.en0igi">enprizonigi</ref>,
      <ref cel="katen.0i.JUR">kateni<sncref/></ref>
    </refgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_r;&c_y;&c_sh;&c_t;&c_o;&c_w;&c_v;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_z;&c_a;&c_t;&c_r;&c_y;&c_m;&c_l;&c_ib;&c_v;&c_a;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="br">herzel<klr tip="ind"> (ul laer)</klr></trd>
  <trdgrp lng="cs">
    <trd>arestovat</trd>,
    <trd>uvalit vazbu</trd>,
    <trd>uv&ecaron;znit</trd>,
    <trd>vz&iacute;t do vazby</trd>,
    <trd>v&ecaron;znit</trd>,
    <trd>zatknout</trd>
  </trdgrp>
  <trdgrp lng="de">
     <trd>festnehmen</trd>,
     <trd>verhaften</trd>,
     <trd>arrestieren</trd>
  </trdgrp>
  <trd lng="en">arrest</trd>
  <trd lng="es">arrestar</trd>
  <trdgrp lng="fr">
    <trd>appr&eacute;hender</trd>,
    <trd>arr&ecirc;ter<klr> (un malfaiteur)</klr></trd>
  </trdgrp>
  <trd lng="he">&lamed;&ayin;&tsadi;&vav;&resh;</trd>
  <trdgrp lng="hu">
     <trd>letart&oacute;ztat</trd>,
     <trd>&odblac;rizetbe vesz</trd>
  </trdgrp>
  <trd lng="ja">&#x902E;&#x6355;&#x3059;&#x308B;  <pr>&#x305F;&#x3044;&#x307B;&#x3059;&#x308B;</pr></trd>
  <trdgrp lng="pl">
     <trd>aresztowa&cacute;</trd>,
     <trd>uj&aogonek;&cacute;</trd>
  </trdgrp>
  <trd lng="pt">prender</trd>
  <trd lng="ru">&c_a;&c_r;&c_je;&c_s;&c_t;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>uv&auml;zni&tcaron;</trd>,
    <trd>zatkn&uacute;&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_a;&c_r;&c_je;&c_sh;&c_t;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_z;&c_a;&c_a;&c_r;&c_je;&c_sh;&c_t;&#x43E;&c_v;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>
  </trdgrp>
</drv>

<drv mrk="arest.0ito">
  <kap><tld/>ito</kap>
  <snc mrk="arest.0ito.JUR">
    <uzo tip="fak">JUR</uzo>
    <dif>
      Homo <tld/>ita:
      <ekz>
        la soldatoj kondukis la <tld/>itojn tra la stratoj
        <fnt><bib>F</bib>, <lok>&FE; 22</lok></fnt>;
      </ekz>
      <ekz>
        el la amaso da <tld/>itoj &scirc;i eka&ubreve;dis konatan mokan vo&ccirc;on
        <fnt>
          <bib>FK</bib>
        </fnt>;
      </ekz>
      <ekz>
        kiam en la urbo &ccirc;io estas en ordo, la stratoj estas balaitaj, la <tld/>itoj
        estas bone zorgataj, da ebriuloj estas malmulte
        <fnt>
          <bib>Revizoro</bib>
          <lok>Akto tria</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;ajnas al mi senracie, sendi <tld/>iton, kaj ne klarigi la akuzojn kontra&ubreve; li
        metitajn
        <fnt>
          <bib>NT</bib>
          <lok>La agoj 25:27</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_r;&c_y;&c_sh;&c_t;&c_a;&c_v;&c_a;&c_n;&c_y;</trd>,
    <trd>&c_a;&c_r;&c_y;&c_sh;&c_t;&c_a;&c_n;&c_t;</trd>,
    <trd>&c_v;&c_ja;&c_z;&c_je;&c_n;&c_mol;</trd>
  </trdgrp>
  <trd lng="br">den <ind>harzet</ind></trd>
  <trd lng="cs">zat&ccaron;en&yacute;</trd>
  <trdgrp lng="de">
     <trd>Festgenommener</trd>,
     <trd>Verhafteter</trd>
  </trdgrp>
  <trdgrp lng="en">
     <trd>arrestee</trd>,
     <trd>detainee</trd>
  </trdgrp>
  <trd lng="fr">pr&eacute;venu</trd>
  <trd lng="he">&ayin;&tsadi;&vav;&resh;</trd>
  <trdgrp lng="hu">
     <trd>letart&oacute;ztatott</trd>,
     <trd>&odblac;rizetbe vett</trd>,
     <trd>&odblac;rizetes</trd>
  </trdgrp>
  <trd lng="ja">&#x902E;&#x6355;&#x8005;  <pr>&#x305F;&#x3044;&#x307B;&#x3057;&#x3083;</pr></trd>
  <trdgrp lng="pl">
     <trd>aresztant</trd>
     <trd>aresztowany</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_a;&c_r;&c_je;&c_s;&c_t;&c_o;&c_v;&c_a;&c_n;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_a;&c_r;&c_je;&c_s;&c_t;&c_a;&c_n;&c_t;</trd>,
    <trd>&c_z;&c_a;&c_k;&c_l;&c_ju;&c_ch;&c_jo;&c_n;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>rab</trd>,
    <trd>v&auml;ze&ncaron;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_a;&c_r;&c_je;&c_sh;&c_t;&#x43E;&c_v;&c_a;&#x43D;&c_i;&c_j;&#xA0;(&c_ib;&#x43C;.)</trd>,
    <trd>&c_a;&c_r;&c_je;&c_sh;&c_t;&c_a;&#x43D;&c_t;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x5750;&#x7981;&#x9589;&#x7684;&#x4EBA; <pr>zu&#xF2;j&#xEC;nb&#xEC;der&#xE9;n</pr></trd>,
    <trd>&#x5750;&#x7981;&#x95ED;&#x7684;&#x4EBA; <pr>zu&#xF2;j&#xEC;nb&#xEC;der&#xE9;n</pr></trd>
  </trdgrp>
</drv>

<drv mrk="arest.0o">
  <kap><tld/>o</kap>
  <snc mrk="arest.0o.JUR">
    <uzo tip="fak">JUR</uzo>
    <dif>
      Ago <tld/>i; &gcirc;ia rezulto:
      <ekz>
        en &ccirc;iu minuto li atendis <tld/>on
        <fnt>
          <bib>IKr</bib>
        </fnt>;
      </ekz>
      <ekz>
        tuj post mia <tld/>o mi estis plurfoje pridemandita
        <fnt>
          <aut>A. Camus, trad. M. Duc Goninaz</aut>,
          <vrk>La Fremdulo</vrk>,
          <lok>1993</lok>
        </fnt>;
      </ekz>
      <ekz>
        li mortigis per glavo Jakobon <klr>[&#x2026;]</klr> kaj vidinte, ke tio pla&ccirc;as al la
        Judoj, li plue aldonis la <tld/>on de Petro
        <fnt>
          <bib>NT</bib>
          <lok>La agoj 12:3</lok>
        </fnt>;
      </ekz>
      <ekz>
        pri la <tld/>o de Likon <klr>[&#x2026;]</klr> li ne diris e&ccirc; unu vorton
        <fnt>
          <bib>Far2</bib>
          <lok>&Ccirc;apitro XXII</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_r;&c_y;&c_sh;&c_t;</trd>
  <trd lng="br">harzidigezh</trd>
  <trdgrp lng="cs">
    <trd>uv&ecaron;zn&ecaron;n&iacute; <klr>(v&yacute;sledek)</klr></trd>,
    <trd>vazba</trd>,
    <trd>zat&ccaron;en&iacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
     <trd>Haft</trd>,
     <trd>Arrest</trd>
     <trd>Beugehaft</trd>,
     <trd>Zwangshaft</trd>,
  </trdgrp>
  <trd lng="en">arrest</trd>
  <trd lng="es">arresto</trd>
  <trd lng="fr">arrestation</trd>
  <trd lng="he">&mem;&#x5B7;&ayin;&#x5B0;&tsadi;&#x5B8;&resh;</trd>
  <trd lng="hu">letart&oacute;ztat&aacute;s</trd>
  <trdgrp lng="ja">
    <trd>&#x902E;&#x6355;  <pr>&#x305F;&#x3044;&#x307B;</pr></trd>,
    <trd>&#x691C;&#x675F;  <pr>&#x3051;&#x3093;&#x305D;&#x304F;</pr></trd>
  </trdgrp>
  <trd lng="pl">uj&eogonek;cie</trd>
  <trd lng="ru">&c_a;&c_r;&c_je;&c_s;&c_t;<klr tip="amb"> (&c_d;&c_je;&c_j;&c_s;&c_t;&c_v;&c_i;&c_je;)</klr></trd>
  <trd lng="sk">zatknutie</trd>
  <trd lng="uk">&c_a;&c_r;&c_je;&c_sh;&c_t;</trd>
  <trd lng="zh">&#x62D8;&#x5F79; <pr>j&#x16B;y&#xEC;</pr></trd>
</drv>

<drv mrk="arest.0ado">
  <kap><tld/>ado</kap>
  <snc mrk="arest.0ado.JUR">
    <dif>
      Ago <tld/>i:
      <ekz>
        flugfolia el&jcirc;etado? <klr>[&#x2026;]</klr> ... tro dan&gcirc;ere ... oni riskos <tld/>adon
        fare de la politika polico
        <fnt>
          <aut>Eriko Navaro</aut>
          <vrk><url ref="&Monato;/2013/010691.php">Flugiloj de libereco</url></vrk>
          <bib>Monato</bib>
          <lok>2013/03, p. 29</lok>
        </fnt>;
      </ekz>
      <ekz>
        gazetoj <klr>[&#x2026;]</klr> protestas pro <tld/>ado de patrino, kiu &scirc;telis por nutri
        siajn infanojn
        <fnt>
          <aut>Ren&eacute;e Triolle</aut>
          <vrk><url ref="&Monato;/2008/009473.php">&Scirc;telo i&gcirc;as kutimo</url></vrk>
          <bib>Monato</bib>
          <lok>2008/10, p. 15</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_r;&c_y;&c_sh;&c_t;&c_a;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>
  <trd lng="br">harzadur</trd>
  <trd lng="cs">zat&yacute;k&aacute;n&iacute;</trd>
  <trdgrp lng="de">
   <trd>Festnahme</trd>,
   <trd>Verhaftung</trd>
  </trdgrp>
  <trd lng="en">arrest</trd>
  <trd lng="fr">arrestation</trd>
  <trd lng="he">&mem;&ayin;&tsadi;&resh;</trd>
  <trd lng="pl">aresztowanie</trd>
  <trd lng="ru">&c_a;&c_r;&c_je;&c_s;&c_t;<klr tip="amb"> (&c_d;&c_je;&c_j;&c_s;&c_t;&c_v;&c_i;&c_je;)</klr></trd>
  <trd lng="sk">zat&yacute;kanie</trd>
</drv>

<drv mrk="arest.0ejo">
  <kap><tld/>ejo</kap>
  <snc mrk="arest.0ejo.JUR">
  <uzo tip="fak">JUR</uzo>
    <dif>
      Loko, kie oni tenas la <tld/>iton:
      <ekz>
        vi ne devos tranokti en polica <tld/>ejo
        <fnt>
          <aut>Stefan Maul</aut>
            <vrk><url ref="&Monato;/2000/007154.php">Finfine oni povas dibo&ccirc;i sen pento</url></vrk>
            <bib>Monato</bib>
            <lok>2000/12, p. 30</lok>
          </fnt>;
      </ekz>
      <ekz>
        la akuzitoj detale priskribis torturojn dum la proceso kaj <klr>[tio]</klr>
        akordas kun <klr>[&#x2026;]</klr> la informoj de la juraj kuracistoj post ilia
        esplorado en la <tld/>ejo
        <fnt>
          <aut>Hektor Alos i Font</aut>
          <vrk><url ref="&Monato;/2010/010065.php">Maljusta justico</url></vrk>
           <bib>Monato</bib>
          <lok>2010/06, p. 8</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="karcer.0o.malliberejo">karcero<sncref/></ref>,
      <ref cel="liber.mal0ejo">malliberejo</ref>,
      <ref cel="prizon.0o">prizono</ref>
    </refgrp>
    <rim>
      La semantiko povas esti iom misgvida tie &ccirc;i: se &leftquot;<tld/>i&rightquot; signifus nur &leftquot;kapti&rightquot;,
      <tld/>ejo devus esti (nur) la loko, kie tia kapto okazas. Ofte arestitoj
      restas katenitaj a&ubreve; en&scirc;lositaj en iu provizora loko, &ccirc;elo de policejo ks anta&ubreve;
      transporti ilin al oficiala malliberejo. Oni do komprenu la vorton pli precize 
      kiel &leftquot;provizora loko, kie oni fiksis <tld/>iton&rightquot;.
      <aut>W. Diestel</aut>
    </rim>
  </snc>
  <trd lng="be">&c_m;&c_je;&c_s;&c_c;&c_a; &c_w;&c_t;&c_r;&c_y;&c_m;&c_a;&c_n;&c_mol;&c_n;&c_ja;</trd>
  <trd lng="br">toull-bac'h</trd>
  <trdgrp lng="cs">
    <trd>vazebn&iacute; m&iacute;stnost</trd>,
    <trd>v&ecaron;znice <klr>(pro vazby)</klr></trd>
  </trdgrp>
  <trdgrp lng="de">
     <trd>Arrestzelle</trd>,
     <trd>Haftzelle</trd>,
     <trd>Kotter</trd>
  </trdgrp>
  <trd lng="en">jail</trd>
  <trd lng="fr">maison d'arr&ecirc;t</trd>
  <trd lng="he">&bet;&yod;&tav; &mem;&#x5B7;&ayin;&#x5B0;&tsadi;&#x5B8;&resh;</trd>
  <trd lng="hu">fogda</trd>
  <trdgrp lng="ja">
    <trd>&#x62D8;&#x7F6E;&#x6240;  <pr>&#x3053;&#x3046;&#x3061;&#x3057;&#x3087;</pr></trd>,
    <trd>&#x7559;&#x7F6E;&#x5834;  <pr>&#x308A;&#x3085;&#x3046;&#x3061;&#x3058;&#x3087;&#x3046;</pr></trd>
  </trdgrp>
  <trd lng="pl">areszt</trd>
  <trdgrp lng="ru">
    <trd>&c_t;&c_ju;&c_r;&c_mol;&c_m;&c_a;</trd>,
    <trd>&c_k;&c_a;&c_m;&c_je;&c_r;&c_a;</trd>,
    <trd>&c_m;&c_je;&c_s;&c_t;&c_o; &c_z;&c_a;&c_k;&c_l;&c_ju;&c_ch;&c_je;&c_n;&c_i;&c_ja;</trd>,
    <trd>&c_a;&c_r;&c_je;&c_s;&c_t;&c_a;&c_n;&c_t;&c_s;&c_k;&c_a;&c_ja;</trd>
  </trdgrp>
  <trd lng="sk">v&auml;znica</trd>
  <trdgrp lng="uk">
    <trd>&#x43F;&c_r;&c_i;&#x43C;&c_ib;&c_shch;&c_je;&#x43D;&#x43D;&#x44F; &c_d;&#x43B;&#x44F; &c_a;&c_r;&c_je;&c_sh;&c_t;&#x43E;&c_v;&c_a;&#x43D;&c_i;&c_h;</trd>,
    <trd>&c_a;&c_r;&c_je;&c_sh;&c_t;&c_a;&#x43D;&c_t;&c_s;&#x44C;&#x43A;&c_a;</trd>,
    <trd>&c_g;&c_a;&c_u;&#x43F;&c_t;&c_v;&c_a;&c_h;&c_t;&c_a;</trd>
  </trdgrp>
</drv>

<drv mrk="arest.0igxo">
  <kap><tld/>i&gcirc;o</kap>
  <snc mrk="arest.0igxo.JUR">
    <dif>
      La okazo, ke oni estas <tld/>ata:
      <ekz>
        <nom>Robinson</nom> penis klarigi <klr>[&#x2026;]</klr> la detalojn pri sia <tld/>i&gcirc;o
        <fnt>
          <bib>TAA</bib>
        </fnt>;
      </ekz>
      <ekz>
        ni kuntreni&gcirc;as <klr>[&#x2026;]</klr> ekde la konsterni&gcirc;o &ccirc;irka&ubreve; la jesua vipado de
        komercistoj en la templo, lia <tld/>i&gcirc;o, pridemandadoj jen de la Sinedrio,
        jen de Pilato, jen de Herodo
        <fnt>
          <aut>Gerrit Berveling</aut>
          <vrk><url ref="&Monato;/2001/pdf/monato200111.pdf#page=28">Historia romano pri
          Jesuo</url></vrk>
          <bib>Monato</bib>
          <lok>2001/11, p. 28</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="br">dalc'h<klr tip="ind"> (stad un den harzet)</klr></trd>
  <trd lng="be">&c_a;&c_r;&c_y;&c_sh;&c_t; <klr tip="amb">(&c_s;&c_t;&c_a;&c_n;
  &c_a;&c_r;&c_y;&c_sh;&c_t;&c_a;&c_v;&c_a;&c_n;&c_a;&c_g;&c_a;)</klr></trd>
  <trdgrp lng="de">
    <trd>Verhaftung</trd>,
    <trd>Gefangennahme</trd>
  </trdgrp>
  <trd lng="en">arrest</trd>
  <trd lng="fr">arrestation</trd>
  <trd lng="ja">&#x902E;&#x6355;&#x3055;&#x308C;&#x308B;&#x3053;&#x3068;  <pr>&#x305F;&#x3044;&#x307B;&#x3055;&#x308C;&#x308B;&#x3053;&#x3068;</pr></trd>
  <trd lng="ru">&c_a;&c_r;&c_je;&c_s;&c_t;<klr tip="amb"> (&c_s;&c_o;&c_s;&c_t;&c_o;&c_ja;&c_n;&c_i;&c_je;
  &c_a;&c_r;&c_je;&c_s;&c_t;&c_o;&c_v;&c_a;&c_n;&c_n;&c_o;&c_g;&c_o;)</klr></trd>
</drv>

<drv mrk="arest.hejma0o">
  <kap>hejma <tld/>o</kap>
  <snc mrk="arest.hejma0o.JUR">
    <uzo tip="fak">JUR</uzo>
    <dif>
      Deviga hejma restado de <tld/>ito kun pli
      a&ubreve; malpli strikta administra kontrolo de liaj
      movi&gcirc;oj kaj agadoj:
      <ekz>
        la ju&gcirc;isto decidis, ke <klr>[li]</klr> restu en hejma <tld/>o
        <klr>[&#x2026;]</klr> li ne rajtas forlasi sian lo&gcirc;ejon sen
        la permeso de la krimesploristo, nek uzi komunikilojn
        <fnt>
          <aut>-</aut>,
          <vrk><url ref="http://www.liberafolio.org/2017/07/26/dmitrij-bogatov-nun-en-hejma-aresto/">
          Dmitrij Bogatov nun en hejma aresto</url></vrk>,
          <lok>libera folio, 2017-07-26</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="de">Hausarrest</trd>
    <trdgrp lng="zh">
    <trd>&#x8EDF;&#x7981; <pr>ru&#x1CE;nj&#xEC;n</pr></trd>,
    <trd>&#x8F6F;&#x7981; <pr>ru&#x1CE;nj&#xEC;n</pr></trd>
  </trdgrp>
</snc>
  <trd lng="be">&c_h;&c_a;&c_t;&c_n;&c_ib; &c_a;&c_r;&c_y;&c_sh;&c_t;</trd>
  <trd lng="fr">assignation &agrave; r&eacute;sidence</trd>
</drv>
