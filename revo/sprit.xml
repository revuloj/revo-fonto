<drv mrk="sprit.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Kapablo rapide eltrovi trafajn, interesajn, lertajn dira&jcirc;ojn a&ubreve;
      agmanierojn:
      <ekz>
        plantado de fruktoj <klr>[&#x2026;]</klr> postulas lian tutan <tld/>on,
        lasas lin &ccirc;iam pensi pri la estonteco kaj per la originaleco de la
       laboroj ligas la printempon kun la a&ubreve;tuno, la someron kun la vintro
        <fnt>
          <bib>FK</bib>
        </fnt>;
      </ekz>
      <ekz>
        <ind>plej bona <tld/>o estas silento</ind>
        <fnt><bib>PrV</bib></fnt>;
        <trd lng="hu">okos ember keveset besz&eacute;l</trd>
      </ekz>
      <ekz>
        malsato donas <tld/>on
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_p;&c_r;&c_y;&c_t;</trd>,
    <trd>&c_d;&c_a;&c_s;&c_mol;&c_c;&c_ib;&c_p;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>,
    <trd>&c_t;&c_r;&c_a;&c_p;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>duchaplnost</trd>,
    <trd>d&uring;vtipnost</trd>,
    <trd>ostrovtip</trd>,
    <trd>vtipnost</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Gewitztheit</trd>,
    <trd>Geschick</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>wit</trd>,
    <trd>brightness</trd>,
