<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>rekt</rad>/a
</kap>
<drv mrk="rekt.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc>
    <dif>
      Nekurba:
      <ekz>
        <tld/>a linio estas pli mallonga ol kurba;
      </ekz>
      <ekz>
        <tld/>a kiel cipreso.
      </ekz>
    </dif>
    <trd lng="de">gerade</trd>
    <trd lng="es">recto</trd>
  </snc>
  <snc>
    <dif>
      Nedeflanki&gcirc;ante alcela:
      <ekz>
        mi irigos vin sur <tld/>a vojstreko<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la domo kiu staris <tld/>e kontra&ubreve; la lo&gcirc;ejo de la
        scienculo<fnt>Z</fnt>;
      </ekz>
      <ekz>
        en <tld/>a direkto al;
      </ekz>
      <ekz>
        kuri <tld/>e al la celo;
      </ekz>
      <ekz>
        <tld/>e paroli<fnt>B</fnt>;
      </ekz>
      <ekz>
        trafi per la parolo <tld/>e en la viza&gcirc;on
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        mal<tld/>a parolado;
      </ekz>
      <ekz>
        nedeklini&gcirc;a irado <tld/>e anta&ubreve;en<fnt>Z</fnt>;
      </ekz>
      <ekz>
        alpa&scirc;i <tld/>e al la afero<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la verko estis skribata <tld/>e (senpere) en Esp.<fnt>Z</fnt>;
      </ekz>
      <ekz>
        tiu laboro estus <tld/>e malutila<fnt>Z</fnt>;
      </ekz>
      <ekz>
        frazo ne tute bonstila, sed ne <tld/>e erara<fnt>Z</fnt>;
      </ekz>
      <ekz>
        tiam vi faros <tld/>e (certe) eraron<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="de">direkt</trd>
    <trd lng="es">directo</trd>
  </snc>
  <snc>
    <dif>
      Vertikale staranta:
      <ekz>
        kun kapo <tld/>a kiel koko;
      </ekz>
      <ekz>
        virinoj sidis a&ubreve; staris <tld/>e<fnt>Z</fnt>;
      </ekz>
      <ekz>
        tenu vin <tld/>e;
      </ekz>
      <ekz>
        li subite <tld/>i&gcirc;is<fnt>Z</fnt>;
      </ekz>
      <ekz>
        kun el<tld/>igita talio<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la tablo staras mal<tld/>e<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="de">aufrecht</trd>
    <trd lng="es">derecho</trd>
  </snc>
  <snc>
    <uzo tip="fak">GRA</uzo>
    <dif>
      Senpera, senprepozicia:
      <ekz>
        la <tld/>an komplementon oni montras per akuz.
      </ekz>
    </dif>
    <trd lng="de">direkt</trd>
    <trd lng="es">directo</trd>
  </snc>
  <snc>
    <dif>
      Senmetafora:
      <ekz>
        <tld/>a stilo.
      </ekz>
    </dif>
    <trd lng="de">konkret</trd>
    <trd lng="es">directo</trd>
  </snc>
  <snc mrk="rekt.0a.MAT">
    <uzo tip="fak">MAT</uzo>
    <subsnc mrk="rekt.0a.orta">
      <uzo tip="stl">EVI</uzo>
      <fnt><bib>VdE</bib></fnt>
      <dif>
        <klr>(p.p. <ref cel="angul.0o.figuro">angulo</ref>)</klr>
      </dif>
      <ref tip="dif" cel="ort.0a.angulo">orta.</ref>
      <trd lng="de">recht</trd>
      <trd lng="es">recto</trd>
    </subsnc>
    <subsnc mrk="rekt.0a.sumo">
      <fnt><bib>EKV</bib><lok>&para;372</lok></fnt>
      <dif>
        <klr>(p.p. <ref cel="sum.0o.vektorasubspaco">sumo</ref> de
        <ref cel="spac.vektorasub0o">vektoraj subspacoj</ref>)</klr>
        Tia, ke ajna &gcirc;ia elemento esprimi&gcirc;as nur unumaniere
        kiel sumo de elementoj en la subspacoj:
        <ekz>
          se la sumo estas <tld/>a, tiam la
          <ref cel="komun.0ajxo.aro">komuna&jcirc;o</ref> de du ajnaj subspacoj
          egalas al <frm>{0}</frm>.
        </ekz>
      </dif>
      <refgrp tip="vid">
        <ref cel="komple1.0a.vektorasubspaco">komplementa</ref>.
      </refgrp>
      <trd lng="de">direkte<klr tip="amb"> (Summe)</klr></trd>
      <trd lng="en">direct<klr tip="ind"> (sum)</klr></trd>
      <trd lng="fr"><klr tip="amb">(somme) </klr>directe</trd>
      <trd lng="ru">&c_p;&c_r;&c_ja;&c_m;&c_a;&c_ja;<klr tip="amb"> (&c_s;&c_u;&c_m;&c_m;&c_a;)</klr></trd>
    </subsnc>
  </snc>
  <trd lng="cs">p&rcaron;&iacute;m&yacute;</trd>
  <trd lng="en">straight</trd>
  <trdgrp lng="fr">
    <trd>droit<klr tip="ind"> (adj.)</klr></trd>,
    <trd>direct</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>recht</trd>,
    <trd>rechtstreeks</trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_r;&c_ja;&c_m;&c_o;&c_j;</trd>
</drv>

<drv mrk="rekt.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="rekt.0o.MAT">
    <subsnc mrk="rekt.0o.elementa">
      <fnt><bib>MatTerm</bib><lok>p. 25</lok></fnt>
      <dif>
        Nekurba <ref tip="super" cel="lini.0o.MAT">linio</ref>,
        amba&ubreve;flanke senfina:
        <ekz>
          tra du punktoj trairas multaj kurboj, sed nur unu <tld/>o.
        </ekz>
      </dif>
      <rim>
        Kompreneble temas pri naiva difino de unu el la plej bazaj nocioj
        de elementa geometrio.
      </rim>
      <trd lng="de">Gerade</trd>
      <trd lng="es">recta</trd>
    </subsnc>
    <subsnc mrk="rekt.0o.unudimensia_spaco">
      <dif>
        <ref cel="rekt.afina0o">Afina <tld/>o</ref> a&ubreve;
        <ref cel="rekt.vektora0o">vektora <tld/>o</ref>, la&ubreve; la
        kunteksto.
      </dif>
    </subsnc>
  </snc>
  <trd lng="en">straight <ind>line</ind></trd>
  <trd lng="de">Gerade</trd>
  <trd lng="nl">rechte</trd>
  <trd lng="fr">droite<klr tip="ind"> (g&eacute;om.)</klr></trd>
  <trd lng="ru">&c_p;&c_r;&c_ja;&c_m;&c_a;&c_ja;<klr tip="amb"> (&c_l;&c_i;&c_n;&c_i;&c_ja;)</klr></trd>
</drv>

<drv mrk="rekt.0ara">
  <kap><tld/>ara</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc mrk="rekt.0ara.surfaco">
    <dif>
      <klr>(p.p. neebena <ref cel="surfac.0o.MAT">surfaco</ref>)</klr>
      Egala al la kuna&jcirc;o de &ccirc;iuj <tld/>oj, inkluzivataj
      en &gcirc;i:
      <ekz>
        <tld/>aran surfacon oni povas intuicie prezenti al si kiel
        la spuron de iu <tld/>o, kiu movi&gcirc;as en la spaco;
      </ekz>
      <ekz>
        <ref cel="cilind.0o.surfaco">cilindroj</ref>,
        <ref cel="konoid.0o">konoidoj</ref> kaj
        <ref cel="konus.0o.surfaco">konusoj</ref> la&ubreve;difine estas
        <tld/>araj surfacoj.
      </ekz>
    </dif>
    <rim>
      La termino ne estas tre rigora, &ccirc;ar <tld/>ara surfaco ne estas
      <ctl>aro da <tld/>oj</ctl>, sed ja aro de la punktoj de &ccirc;iuj
      &ccirc;i <tld/>oj. La metaforo per <ctl><tld/>ilo</ctl>, kiun uzas la
      franca kaj la rusa povus esti pli bona bazo por la koncerna termino.
      Notindas, ke Bricard
      <fnt><bib>MatTerm</bib><lok>p. 39</lok></fnt> uzas &ccirc;i-sence
      la terminon <ctl><tld/>enaskita</ctl>, tamen ne sekvinda pro la
      strangeco de la kunmeta&jcirc;o same kiel <ctl><tld/>oestigebla</ctl>
      trovebla en
      <fnt><bib>MatStokTerm</bib><lok>p. 46</lok></fnt>.
    </rim>
  </snc>
  <trdgrp lng="de">
    <trd>geradlinige<klr tip="amb"> (Fl&auml;che)</klr></trd>,
    <trd>Regel-<klr tip="amb">(fl&auml;che)</klr></trd>
  </trdgrp>
  <trd lng="en">ruled<klr tip="ind"> (surface)</klr></trd>
  <trd lng="fr"><klr tip="amb">(surface) </klr>r&eacute;gl&eacute;e</trd>
  <trd lng="ru">&c_l;&c_i;&c_n;&c_je;&c_j;&c_ch;&c_a;&c_t;&c_a;&c_ja;<klr tip="amb"> (&c_p;&c_o;&c_v;&c_je;&c_r;&c_h;&c_n;&c_o;&c_s;&c_t;&c_mol;)</klr></trd>
</drv>

<drv mrk="rekt.0ilo">
  <kap><tld/>ilo</kap>
  <uzo tip="fak">TEK</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 25</lok></fnt>
  <snc>
    <dif>
      Ilo, uzata por desegni <tld/>ajn liniojn:
      <ekz>
        T-kapa <tld/>ilo
        <fnt><bib>PIV1</bib></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">r&egrave;gle<klr tip="ind"> (&agrave; dessin)</klr></trd>
  <trd lng="ru">&c_l;&c_i;&c_n;&c_je;&c_j;&c_k;&c_a;<klr tip="amb"> (&c_d;&c_l;&c_ja; &c_ch;&c_je;&c_r;&c_ch;&c_je;&c_n;&c_i;&c_ja;)</klr></trd>
</drv>

<drv mrk="rekt.0igilo">
  <kap><tld/>igilo</kap>
  <uzo tip="fak">ELE</uzo>
  <snc>
    <dif>
      Aran&gcirc;a&jcirc;o por transformi
      <ref cel="kurent.alterna0o">alternan kurenton</ref> en
      <ref cel="kurent.rekta0o">kurenton <tld/>an</ref>
      a&ubreve; e&ccirc; <ref cel="kurent.konstanta0o">konstantan</ref>.
    </dif>
    <rim>
      En la literaturo troveblas anka&ubreve;
      <ref tip="sin" cel="rektif.0ilo">rektifilo</ref> kaj
      <tld/>ilo.
    </rim>
  </snc>
  <trd lng="de">Gleichrichter</trd>
  <trd lng="en">rectifier</trd>
  <trd lng="fr">redresseur</trd>
  <trd lng="hu">egyenir&aacute;ny&iacute;t&oacute;</trd>
  <trd lng="ru">&c_v;&c_y;&c_p;&c_r;&c_ja;&c_m;&c_i;&c_t;&c_je;&c_l;&c_mol;</trd>
</drv>

<drv mrk="rekt.duon0o">
  <kap>duon<tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 26</lok></fnt>
  <snc mrk="rekt.duon0o.MAT">
    <dif>
      <klr>(en <ref cel="spac.afina0o">afina spaco</ref>)</klr>
      <ref cel="ar.0o.MAT">Aro</ref> de &ccirc;iuj punktoj de la tipo
      <frm>&lambda;&#8729;<k>u</k>+O</frm>, kie <frm>O</frm> 
      estas iu punkto <klr>(&gcirc;ia 
      <ref cel="origin.0o.de_duonrekto">origino</ref>)</klr>, 
      <frm><k>u</k></frm> 
      estas iu nenula vektoro <klr>(direktanta vektoro)</klr> kaj
      <frm>&lambda;</frm> estas arbitra pozitiva reelo:
      <ekz>
        duon<tld/>o ne estas afina subspaco;
      </ekz>
      <ekz>
        intuicie, duon<tld/>o kun origino <frm>O</frm> estas &ccirc;iu 
        el la du linioj, kiujn oni estigas, rompante <tld/>on &ccirc;e unu 
        &gcirc;ia punkto <frm>O</frm>.
      </ekz>
    </dif>
  </snc>
  <trd lng="en">half-line</trd>
  <trd lng="de">Halbgerade</trd>
  <trd lng="fr">demi-droite</trd>
  <trd lng="ru">&c_p;&c_o;&c_l;&c_u;&c_p;&c_r;&c_ja;&c_m;&c_a;&c_ja;</trd>
</drv>

<drv mrk="rekt.sam0a">
  <kap>sam<tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatVort</bib></fnt>
  <snc>
    <dif>
      <klr>(p.p. <ref cel="punkt.0o.spaco">punktoj</ref> a&ubreve; aroj
      da punktoj)</klr>
      Apartenantaj al <klr>(a&ubreve; inkluzivataj en)</klr> unu sama
      <ref cel="rekt.0o.MAT"><tld/>o</ref>:
      <ekz>
        du punktoj estas &ccirc;iam sam<tld/>aj;
      </ekz>
      <ekz>
        sam<tld/>aj strekoj <klr>(segmentoj el unu sama <tld/>o)</klr>;
      </ekz>
      <ekz>
        &ccirc;iu punkto de <ref cel="strek.0o.segmento">streko</ref> estas
        sam<tld/>a kun ties randoj;
      </ekz>
      <ekz>
        tra tri nesam<tld/>aj punktoj trairas nur unu ebeno.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">kollinear</trd>
  <trd lng="en">collinear</trd>
  <trdgrp lng="fr">
    <trd>align&eacute;</trd>,
    <trd>colin&eacute;aire</trd>
  </trdgrp>
  <trd lng="ru">&c_k;&c_o;&c_l;&c_l;&c_i;&c_n;&c_je;&c_a;&c_r;&c_n;&c_y;&c_j;</trd>
</drv>

<drv mrk="rekt.afina0o">
  <kap>afina <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref cel="dimens.n0a">Unudimensia</ref>
      <ref cel="spac.afina0o">afina spaco</ref>.
    </dif>
  </snc>
  <trd lng="de">affine <ind>Gerade</ind></trd>
  <trd lng="en">affine <ind>line</ind></trd>
  <trd lng="fr">droite affine</trd>
  <trd lng="ru">&c_a;&c_f;&c_f;&c_i;&c_n;&c_n;&c_a;&c_ja; <ind>&c_p;&c_r;&c_ja;&c_m;&c_a;&c_ja;</ind></trd>
</drv>

<drv mrk="rekt.euxlera0o">
  <kap>e&ubreve;lera <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(de neegallatera <ref cel="angul.tri0o">triangulo</ref>)</klr>
      <ref tip="super" cel="rekt.0o.MAT"><tld lit="R"/>o <sncref/></ref>,
      trairanta &gcirc;ian <ref cel="ortoce.0o">ortocentron</ref>, 
      &gcirc;ian <ref cel="centr.pezo0o.MAT">pezocentron</ref>, 
      la centron de &gcirc;ia 
      <ref cel="skrib.cxirkaux0ita">&ccirc;irka&ubreve;skribita</ref> cirklo 
      kaj la centron de la 
      <ref cel="cirkl.euxlera0o">e&ubreve;lera cirklo</ref>.
    </dif>
    <ref tip="vid" cel="euxler.0o">E&ubreve;lero.</ref>
  </snc>
  <trd lng="fr">droite d'Euler</trd>
</drv>

<drv mrk="rekt.vektora0o">
  <kap>vektora <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <ref cel="dimens.n0a">Unudimensia</ref>
      <ref cel="spac.vektora0o">vektora spaco</ref>.
    </dif>
  </snc>
  <trd lng="de">Vektorgerade</trd>
  <trd lng="en">one-dimensional vector <ind>space</ind></trd>
  <trd lng="fr">droite vectorielle</trd>
  <trd lng="ru">&c_v;&c_je;&c_k;&c_t;&c_o;&c_r;&c_n;&c_a;&c_ja; <ind>&c_p;&c_r;&c_ja;&c_m;&c_a;&c_ja;</ind></trd>
</drv>
</art>
