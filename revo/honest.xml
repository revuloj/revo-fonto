<drv mrk="honest.mal0ajxo">
  <kap>mal<tld/>a&jcirc;o</kap>
  <snc mrk="honest.mal0ajxo.malvero">
    <dif>
      Malvero, trompo, misprezento:
      <ekz>
        de la profetoj &gcirc;is la pastroj &ccirc;iuj faras mal<tld/>a&jcirc;on,
        Kaj la vundojn de mia popolo ili kuracas per facilanimigo,
        dirante, ke &ccirc;io estas en bona stato,
        kvankam ne estas bona stato
        <fnt><bib>MT</bib>, <lok>&Jer; 6:13&ndash;14</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_h;&c_l;&c_u;&c_s;&c_mol;&c_n;&c_ja;</trd>,
      <trd>&c_m;&c_a;&c_n;&c_a;</trd>
    </trdgrp>
    <trd lng="ru">&c_l;&c_o;&c_zh;&c_mol;</trd>
  </snc>
  <snc mrk="honest.mal0ajxo.malbono">
    <dif>
      Malbono, ago kontra&ubreve;morala:
      <ekz>
        <uzo tip="fak">BIB</uzo>
        oni fidas vanta&jcirc;on kaj parolas malveron, gravedi&gcirc;as
        per
        <ind>mal<tld/>a&jcirc;o</ind> kaj naskas krimon
        <fnt><bib>MT</bib>, <lok>&Jes; 59:4</lok></fnt>.
        <trd lng="ru">&c_z;&c_l;&c_o;</trd>
      </ekz>
    </dif>
    <trd lng="be">&c_n;&c_je;&c_p;&c_a;&c_ch;&c_e;&c_s;&c_n;&c_y; &c_w;&c_ch;&c_y;&c_n;&c_a;&c_k;</trd>
    <trd lng="ru">&c_b;&c_je;&c_s;&c_ch;&c_je;&c_s;&c_t;&c_n;&c_y;&c_j; &c_p;&c_o;&c_s;&c_t;&c_u;&c_p;&c_o;&c_k;</trd>
  </snc>
  <trd lng="br">dizonestiz<klr tip="ind"> (ober)</klr></trd>
  <trdgrp lng="de">
    <trd>Unwahrheit</trd>,
    <trd>Schwindelei</trd>,
    <trd>L&uuml;ge</trd>
  </trdgrp>
  <trd lng="fr">malhonn&ecirc;tet&eacute;</trd>
  <trd lng="hu">tisztess&eacute;gtelen dolog</trd>
  <trd lng="it">disonest&agrave;<klr tip="amb"> (atto disonesto)</klr></trd>
  <trdgrp lng="pt">
   <trd>ato <ind>desonesto</ind></trd>,
   <trd>a&ccedil;&atilde;o <ind>desonesta</ind></trd>
  </trdgrp>
