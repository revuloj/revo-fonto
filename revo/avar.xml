    <trd>&#20986;&#12375;&#24796;&#12375;&#12416;  <pr>&#12384;&#12375;&#12362;&#12375;&#12416;</pr></trd>
  </trdgrp>
  <trd lng="nl">karig zijn met</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_k;&c_u;&c_p;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_zh;&c_a;&c_l;&c_je;&c_t;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="sk">
