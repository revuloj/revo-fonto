<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>avar</rad>/a
</kap>
<drv mrk="avar.0a">
   <kap><ofc>*</ofc><tld/>a</kap>
   <snc num="1">
     <dif>
       Monavida, monama, tro mon&scirc;para.
     </dif>
     <adm>
     Necesas rompi la cirklon avara-> monavida (sub mono) -> avara.
     <aut>MB</aut>
     </adm>
   </snc>
   <snc num="2">
     <uzo tip="stl">FIG</uzo>
     <dif>
       Tro &scirc;parema pri io:
       <ekz>
         <tld/>a je helpo, pri la&ubreve;doj.
       </ekz>
     </dif>
   </snc>
   <trd lng="de">geizig</trd>
   <trd lng="fr">avare</trd>
   <trd lng="ru">&#1089;&#1082;&#1091;&#1087;&#1086;&#1081;</trd>
</drv>
<drv mrk="avar.0i">
   <kap><tld/>i</kap>
   <gra><vspec>tr</vspec></gra>
   <snc>
     <dif>
       Esti avara pri, agi <tld/>e pri io:
       <ekz>
         patro <tld/>as, infanoj mal&scirc;paras
         <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>;
       </ekz>
       <ekz>
         <tld/>i al iu nutra&jcirc;on<fnt>B</fnt>,
         karesojn<fnt>B</fnt>;
       </ekz>
       <ekz>
         <tld/>i la la&ubreve;dojn, helpon.
       </ekz>
     </dif>
   </snc>
   <refgrp tip="vid">
     <ref cel="avid.0i">avidi</ref>,
     <ref cel="domagx.0i">doma&gcirc;i</ref>,
     <ref cel="sxpar.0i">&scirc;pari</ref>.
   </refgrp>
   <trd lng="de">geizen</trd>
   <trdgrp lng="fr">
     <trd>&ecirc;tre <ind>avare</ind> (de)</trd>,
     <trd>rationner<klr tip="ind"> (par avarice)</klr></trd></trdgrp>
   <trdgrp lng="ru">
     <trd>&#1089;&#1082;&#1091;&#1087;&#1080;&#1090;&#1100;&#1089;&#1103;</trd>,
     <trd>&#1078;&#1072;&#1083;&#1077;&#1090;&#1100;</trd>
   </trdgrp>
</drv>
<drv mrk="avar.mal0a">
   <kap>mal<tld/>a</kap>
   <snc>
     <dif>
       Facile donanta:
       <ekz>
         pri havo najbara <klr>(de najbaro)</klr> oni estas mal<tld/>a
         <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>;
       </ekz>
       <ekz>
         mal<tld/>a je promesoj.
       </ekz>
     </dif>
   </snc>
   <trd lng="de">freigiebig</trd>
   <trdgrp lng="fr">
     <trd>g&eacute;n&eacute;reux</trd>,
     <trd>large<klr tip="ind"> (g&eacute;n&eacute;reux)</klr></trd></trdgrp> 
   <trd lng="ru">&#1097;&#1077;&#1076;&#1088;&#1099;&#1081;</trd>
</drv>
</art>
