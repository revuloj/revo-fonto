<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>avar</rad>/a
</kap>
<drv mrk="avar.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc mrk="avar.0a.feticxisma">
    <dif>
      Feti&ccirc;isme <ref tip="super" cel="sxpar.0ema">&scirc;parema</ref>,
      pasie kolektanta hava&jcirc;ojn kaj doma&gcirc;anta &gcirc;in uzi:
      <ekz>mal&scirc;parulo &gcirc;uas nelonge, <tld/>ulo neniam
        <fnt><bib>PrV</bib></fnt></ekz>
    </dif>
    <rim>
      Homo <tld/>a ofte estas <ref cel="avid.0a">avida</ref>, sed
      iuj estas avidaj (akiremaj) kaj mal<tld/>aj.
    </rim>
  </snc>
  <snc mrk="avar.0a.egoisma">
    <dif>
      Egoisme <ref tip="super" cel="sxpar.0ema">&scirc;parema</ref>:
      <ekz>
        li estas mal&scirc;parema pri siaj kapricoj, sed tre <tld/>a kiam
        temas pri la publika bono.
      </ekz>
    </dif>
  </snc>
  <snc mrk="avar.0a.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Tro &scirc;parema pri io:
      <ekz>
        <tld/>a je helpo, pri la&ubreve;doj.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_k;&c_u;&c_p;&c_y;</trd>, 
    <trd>&c_s;&c_k;&c_n;&c_a;&c_r;&c_l;&c_ib;&c_v;&c_y;</trd>, 
    <trd>&c_p;&c_r;&c_a;&c_g;&c_n;&c_y;</trd>, 
    <trd>&c_h;&c_c;&c_ib;&c_v;&c_y;</trd>
  </trdgrp>  
  <trd lng="de">geizig</trd>
  <trd lng="es">avaro</trd>
  <trd lng="fr">avare</trd>
  <trd lng="ru">&c_s;&c_k;&c_u;&c_p;&c_o;&c_j;</trd>
</drv>

<drv mrk="avar.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Esti avara pri, agi <tld/>e pri io:
      <ekz>patroj <tld/>as, infanoj mal&scirc;paras
        <fnt><bib>PrV</bib></fnt></ekz>
      <ekz>
        <tld/>i al iu nutra&jcirc;on<fnt>B</fnt>,
        karesojn<fnt>B</fnt>;
      </ekz>
      <ekz>
        <tld/>i la la&ubreve;dojn, helpon.
      </ekz>
    </dif>
  </snc>
  <refgrp tip="sin">
    <ref cel="domagx.0i.avari">doma&gcirc;i</ref>,
    <ref cel="sxpar.0i.moderi">&scirc;pari</ref>
  </refgrp>
  <ref tip="vid" cel="avid.0i">avidi</ref>
  <trdgrp lng="be">
    <trd>&c_s;&c_k;&c_u;&c_p;&c_ib;&c_c;&c_c;&c_a;</trd>, 
    <trd>&c_s;&c_k;&c_n;&c_a;&c_r;&c_y;&c_c;&c_c;&c_a;</trd>, 
    <trd>&c_p;&c_r;&c_a;&c_g;&c_n;&c_u;&c_c;&c_mol;</trd>
  </trdgrp>  
  <trd lng="de">geizen</trd>
  <trdgrp lng="fr">
    <trd>&ecirc;tre <ind>avare</ind> (de)</trd>,
    <trd>rationner<klr tip="ind"> (par avarice)</klr></trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_s;&c_k;&c_u;&c_p;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_zh;&c_a;&c_l;&c_je;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="avar.mal0a">
  <kap>mal<tld/>a</kap>
  <snc>
    <dif>
      Facile donanta:
      <ekz>pri havo najbara <klr>(de najbaro)</klr> oni estas mal<tld/>a
        <fnt><bib>PrV</bib></fnt></ekz>
      <ekz>
        mal<tld/>a je promesoj.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_sh;&c_ch;&c_o;&c_d;&c_r;&c_y;</trd>
  <trd lng="de">freigiebig</trd>
  <trd lng="es">generoso</trd>
  <trdgrp lng="fr">
    <trd>g&eacute;n&eacute;reux</trd>,
    <trd>large<klr tip="ind"> (g&eacute;n&eacute;reux)</klr></trd>,
    <trd>prodigue</trd>
  </trdgrp>
  <trd lng="ru">&c_shch;&c_je;&c_d;&c_r;&c_y;&c_j;</trd>
</drv>
</art>
