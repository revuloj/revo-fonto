<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: mod1.xml,v 1.8 2023/09/02 06:04:13 revo Exp $">
    <kap>
      <rad>mod</rad>/o
    </kap>

<drv mrk="mod1.0o">
  <kap><tld/>o</kap>
  <snc mrk="mod1.0o.GRA_PV">
    <uzo tip="fak">GRA</uzo>
    <fnt>Z</fnt>
    <dif>
      <ref tip="dif" cel="modus.0o.GRA">Moduso<sncref/></ref>:
      <ekz>
        formoj de la verbo: la tempo estanta akceptas la fini&gcirc;on -as, 
        la tempo estinta -is, la tempo estonta -os, la <tld/>o kondi&ccirc;a 
        -us, la <tld/>o ordona -u, la <tld/>o sendifina -i
        <fnt>
          <bib>FK</bib>
        </fnt>;
      </ekz>
      <ekz>
        la tempoj estanta, estinta kaj estonta kaj <klr>[&#x2026;]</klr> la
        <tld/>oj sendifina, kondi&ccirc;a kaj ordona
        <fnt>
          <bib>EE</bib>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_f;&c_o;&c_r;&c_m;&c_a; <klr tip="amb">(&c_d;&c_z;&c_je;&c_ja;&c_s;&c_l;&c_o;&c_v;&c_a;)</klr></trd>
    <trd lng="de">Modus <ind>(Verbkategorie)</ind></trd>
    <trd lng="pl">modus</trd>
  </snc>
  <snc mrk="mod1.0o.GRA">
    <uzo tip="fak">GRA</uzo>
    <ref tip="dif" cel="modal.verba0o">verba modalo</ref>
    <rim>
      PV konfuzas modalon kaj moduson; PAG donas al <tld/>o la
      sencon modalan.
    </rim>
    <trdgrp lng="be">
      <trd>&c_m;&c_a;&c_d;&c_a;&c_l;&c_mol;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol; <klr tip="amb">(&c_d;&c_z;&c_je;&c_ja;&c_s;&c_l;&c_o;&c_v;&c_a;)</klr></trd>,
      <trd>&c_l;&c_a;&c_d; <klr tip="amb">(&c_d;&c_z;&c_je;&c_ja;&c_s;&c_l;&c_o;&c_v;&c_a;)</klr></trd>
    </trdgrp>
    <trd lng="br">doare<klr tip="ind"> (yezhadur)</klr></trd>
    <trd lng="es">modo</trd>
    <trd lng="fr">mode<klr> (grammatical)</klr></trd>
    <trd lng="nl">wijs<klr tip="ind"> (v.werkwoord)</klr></trd>
    <trd lng="pl">tryb <klr>[gram.]</klr></trd>
    <trd lng="ro">mod gramatical</trd>
    <trd lng="ru">&c_n;&c_a;&c_k;&c_l;&c_o;&c_n;&c_je;&c_n;&c_i;&c_je;
    <klr>(&c_g;&c_l;&c_a;&c_g;&c_o;&c_l;&c_a;)</klr></trd>
  </snc>
  <rim>
    Vd <ref tip="hom" cel="mod.0o">modo</ref> <klr>(kutimo de vestado
    ktp)</klr>.
  </rim>
  <trd lng="en">mood</trd>
  <trdgrp lng="ja">
    <trd>&#x6D41;&#x884C;  [<ind>&#x306F;&#x3084;&#x308A;</ind>]</trd>,
    <trd>&#x53D9;&#x6CD5;  [<ind>&#x3058;&#x3087;&#x307B;&#x3046;</ind>]</trd>,
    <trd>&#x30E2;&#x30FC;&#x30C9;  [<ind>&#x3082;&#x30FC;&#x3069;</ind>]</trd>,
    <trd>&#x30D5;&#x30A1;&#x30C3;&#x30B7;&#x30E7;&#x30F3;</trd>,
    <trd>&#x6700;&#x983B;&#x5024;  [<ind>&#x3055;&#x3044;&#x3072;&#x3093;&#x3061;</ind>]</trd>
  </trdgrp>
  <trd lng="uk">&#x43C;&#x43E;&c_d;&c_a;</trd>
</drv>

  </art>

