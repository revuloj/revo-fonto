<art mrk="$Id: patos.xml,v 1.24 2024/02/16 19:24:11 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>patos</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="patos.0o">
  <kap><tld/>o</kap>
  <snc mrk="patos.0o.BELA">
    <uzo tip="fak">BELA</uzo>
    <uzo tip="fak">BELE</uzo>
    <dif>
      Emocia, solena a&ubreve; entuziasma esprimo de altaj pensoj a&ubreve; intensaj
      sentoj:
      <ekz>
        la <tld/>o de Pindaro, de Viktoro Hugo.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="akcent.0i">akcenti</ref>,
      <ref cel="bombas.0o">bombasto</ref>,
      <ref cel="eksklamaci.0o.BELE">eksklamacio</ref>,
      <ref cel="emfaz.0o">emfazo</ref>,
      <ref cel="pomp.0o">pompo</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_t;&c_a;&c_s;</trd>
  <trd lng="bg">&c_p;&c_a;&c_t;&c_o;&c_s;</trd>
  <trdgrp lng="cs">
    <trd>nad&scaron;en&yacute; p&rcaron;ednes</trd>,
    <trd>patos</trd>
  </trdgrp>
  <trd lng="de">Pathos</trd>
  <trdgrp lng="en">
    <trd>passion</trd>,
    <trd>feeling</trd>,
    <trd>bombast</trd>,
    <trd>rant</trd>,
    <trd>fervor</trd>,
    <trd>expression</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>grandiloquence</trd>,
    <trd>path&eacute;tique<klr> (subst.)</klr></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>p&aacute;tosz</trd>,
    <trd>emelkedetts&eacute;g</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x60C5;&#x71B1;&#x7684;&#x8868;&#x73FE;  <pr>&#x3058;&#x3087;&#x3046;&#x306D;&#x3064;&#x3066;&#x304D;&#x3072;&#x3087;&#x3046;&#x3052;&#x3093;</pr></trd>,
    <trd>&#x611F;&#x52D5;&#x7684;&#x8868;&#x73FE;  <pr>&#x304B;&#x3093;&#x3069;&#x3046;&#x3066;&#x304D;&#x3072;&#x3087;&#x3046;&#x3052;&#x3093;</pr></trd>,
    <trd/>,
    <trd>&#x30D1;&#x30C8;&#x30B9;</trd>
  </trdgrp>
  <trd lng="nl">pathos</trd>
  <trd lng="pl">patos</trd>
  <trd lng="pt">patos</trd>
  <trd lng="ro">patos</trd>
  <trd lng="ru">&c_p;&c_a;&c_f;&c_o;&c_s;</trd>
  <trdgrp lng="sk">
    <trd>nad&scaron;en&yacute; prednes</trd>,
    <trd>p&aacute;tos</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_p;&c_a;&c_f;&c_o;&c_s;</trd>,
    <trd>&c_p;&c_ib;&c_d;&c_n;&c_je;&c_s;&c_je;&c_n;&c_n;&c_ja;</trd>
  </trdgrp>
</drv>

<drv mrk="patos.0a">
  <kap><tld/>a</kap>
  <snc mrk="patos.0a.BELA">
    <dif>
      Kiu esprimas emocie, kortu&scirc;e, pasie:
      <ekz>
        <tld/>aj strofoj
        <fnt><aut>H. Sienkewicz, trad. L. Zamenhof</aut>, <vrk>Quo 
        vadis?</vrk>, <lok>1933</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_a;&c_t;&c_a;&c_s;&c_n;&c_y;</trd>,
    <trd>&c_p;&c_a;&c_t;&c_e;&c_t;&c_y;&c_ch;&c_n;&c_y;</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>emotional</trd>,
    <trd>impassioned</trd>,
    <trd>passionate</trd>,
    <trd>pathetic</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>grandiloquent</trd>,
    <trd>path&eacute;tique<klr> (adj.)</klr></trd>,
    <trd>r&eacute;thorique<klr> (adj.)</klr></trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x71B1;&#x60C5;&#x7684;&#x306A;  <pr>&#x306D;&#x3064;&#x3058;&#x3087;&#x3046;&#x3066;&#x304D;&#x306A;</pr></trd>,
    <trd>&#x611F;&#x52D5;&#x7684;&#x306A;  <pr>&#x304B;&#x3093;&#x3069;&#x3046;&#x3066;&#x304D;&#x306A;</pr></trd>
  </trdgrp>
  <trd lng="pl">patetyczny</trd>
  <trd lng="ro">patetic</trd>
  <trd lng="zh">&#x5207;&#x6FC0; <pr>qi&#xE8;j&#x12B;</pr></trd>
</drv>
</art>
