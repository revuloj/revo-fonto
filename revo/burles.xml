<drv mrk="burles.0a">
<kap><tld/>a</kap>
<snc>
<dif>
Ekstravagance komika, kontrastiganta la noblecon de la temo kun la trivialeco de la stilo: <ekz><tld/>a poemo.
</ekz>
</dif>
<refgrp tip="vid">
<ref cel="grotes.0a">groteska</ref>.
</refgrp>
</snc>
<trd lng="be">&c_b;&c_u;&c_r;&c_l;&c_je;&c_s;&c_k;&c_n;&c_y;</trd>
  <trd lng="de">burlesk</trd>
<trd lng="en">burlesque</trd>
<trd lng="fr">burlesque</trd>
<trdgrp lng="hu">
  <trd>burleszk</trd>,
  <trd>kacagtat&oacute;</trd>
</trdgrp>
<trdgrp lng="ru">
  <trd>&c_b;&c_u;&c_r;&c_l;&c_je;&c_s;&c_k;&c_n;&c_y;&c_j;</trd>,
  <trd>&c_v;&c_y;&c_ch;&c_u;&c_r;&c_n;&c_o;-&c_k;&c_o;&c_m;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
</trdgrp>
</drv>
<drv mrk="burles.0ulo">
<kap><tld/>ulo</kap>
<snc>
<dif>
Pajaco, gajigisto.
</dif>
<refgrp tip="vid">
<ref cel="histri1.0o">histriono</ref>,
<ref cel="arleke.0o">arlekeno</ref>.
</refgrp>
</snc>
<trd lng="be">&c_b;&c_l;&c_a;&c_z;&c_a;&c_n;</trd>
<trdgrp lng="fr">
  <trd>bouffon</trd>,
  <trd>amuseur</trd>,
  <trd>comique burlesque <klr tip="ind">(amuseur)</klr></trd></trdgrp>
<trdgrp lng="hu">
  <trd>m&oacute;kamester</trd>,
  <trd>nevettet&odblac;</trd></trdgrp> 
<trd lng="ru">&c_sh;&c_u;&c_t;</trd>
</drv>
