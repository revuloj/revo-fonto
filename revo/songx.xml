<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>son&gcirc;</rad>/o
</kap>
<drv mrk="songx.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="songx.0o.dorma">
    <dif>
      Bildoj kaj ideoj, plej ofte senordaj kaj senlogikaj, aperantaj en
      nia imago dum dormo:
      <ekz>
        Dio venis al <nom>Abimele&hcirc;</nom> nokte en la <tld/>o
        <fnt>
          <bib>MT</bib>
          <lok>Genezo 20:3</lok>
        </fnt>;
      </ekz>
      <ekz>
        li signifoklarigis al ni niajn <tld/>ojn
        <fnt>
          <bib>MT</bib>
          <lok>Genezo 41:12</lok>
        </fnt>;
      </ekz>
      <ekz>
        aperos inter vi profeto a&ubreve; <tld/>isto kaj prezentos al vi signon
        <fnt>
          <bib>MT</bib>
          <lok>Readmono 13:1</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;i havis en la nokto tre strangan <tld/>on pri hundo kaj soldato, ke &scirc;i rajdis
        sur la hundo kaj la soldato &scirc;in kisis
        <fnt>
          <bib>Fab1</bib>
          <lok>Fajrilo</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>o teruras, <tld/>o forkuras
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="delir.0o">deliro</ref>,
      <ref cel="fantaz.0o">fantazio</ref>,
      <ref cel="rev">revo</ref>,
      <ref cel="iluzi.0o">iluzio</ref>,
      <ref cel="imag.0povo.PSI">imago</ref>.
    </refgrp>
  </snc>
  <trd lng="be">&c_s;&c_o;&c_n;</trd>
  <trd lng="bg">&c_s;&c_malmol;&c_n;</trd>
  <trd lng="cs">sen</trd>
  <trd lng="de">Traum</trd>
  <trd lng="en">dream</trd>
  <trd lng="es">sue&ntilde;o</trd>
  <trdgrp lng="fr">
    <trd>r&ecirc;ve</trd>,
    <trd>songe</trd>
  </trdgrp>
  <trd lng="hu">&aacute;lom</trd>
  <trd lng="it">sogno</trd>
  <trd lng="nl">droom</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_o;&c_n;<klr tip="ind">
    (&c_s;&c_n;&c_o;&c_v;&c_i;&c_d;&c_je;&c_n;&c_i;&c_je;)</klr></trd>,
    <trd>&c_s;&c_n;&c_o;&c_v;&c_i;&c_d;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
  <trd lng="sv">dr&ouml;m</trd>
</drv>

<drv mrk="songx.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="songx.0i.dorme">
    <dif>
      Vidi image dum la dormo:
      <ekz>
        li <tld/>is, ke la suno kaj la luno sin klinas anta&ubreve; li, li vidis sian patron
        denove vigla kaj sana, li a&ubreve;dis lin ridanta
        <fnt>
          <bib>Fab1</bib>
          <lok>Vojkamarado</lok>
        </fnt>;
      </ekz>
      <ekz>
        pri tio &ccirc;i li nenion sciis, li ne povis e&ccirc; <tld/>i
        <klr>(<ref cel="rev.0i">revi</ref>)</klr> pri &scirc;i
        <fnt>
          <bib>Fab1</bib>
          <lok>La virineto de maro</lok>
        </fnt>;
      </ekz>
      <ekz>
        kiel malsatanto <tld/>as, ke li man&gcirc;as, sed li veki&gcirc;as, kaj lia interno estas
        malplena
        <fnt>
          <bib>MT</bib>
          <lok>Jesaja 29:8</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;i <tld/>as, kvaza&ubreve; &scirc;i estas ankora&ubreve; tre juna knabino
        <fnt>
          <bib>FK</bib>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_mol;&c_n;&c_ib;&c_c;&c_mol;</trd>,
    <trd>&c_b;&c_a;&c_ch;&c_y;&c_c;&c_mol; &c_u;
    <ind>&c_s;&c_mol;&c_n;&c_je;</ind></trd>,
    <trd>&c_b;&c_a;&c_ch;&c_y;&c_c;&c_mol;
    <ind>&c_s;&c_o;&c_n;</ind></trd>
  </trdgrp>
  <trd lng="bg">&c_s;&c_malmol;&c_n;&c_u;&c_v;&c_a;&c_m;</trd>
  <trd lng="de">tr&auml;umen</trd>
  <trd lng="es">so&ntilde;ar</trd>
  <trd lng="fr">songer</trd>
  <trd lng="hu">&aacute;lmodik</trd>
  <trd lng="it">sognare</trd>
  <trd lng="nl">dromen</trd>
  <trdgrp lng="ru">
    <trd>&c_v;&c_i;&c_d;&c_je;&c_t;&c_mol;
    <ind>&c_s;&c_o;&c_n;</ind></trd>,
    <trd>&c_v;&c_i;&c_d;&c_je;&c_t;&c_mol; &c_v;&c_o;
    <ind>&c_s;&c_n;&c_je;</ind>
    <klr>(&c_ch;&c_t;&c_o;-&c_l;.)</klr></trd>
  </trdgrp>
  <trd lng="sv">dr&ouml;mma</trd>
</drv>

<drv mrk="songx.prem0o">
  <kap>prem<tld/>o</kap>
  <snc mrk="songx.prem0o.inkubo">
    <dif>
      <ref tip="dif" cel="inkub.0o.songxo">Inkubo</ref>:
      <ekz>
        &ccirc;iunokte mi havas prem<tld/>on &ndash; &ccirc;iam la saman
        <fnt>
          <bib>Monato</bib>
          <aut>Garbhan Macaoidh</aut>
          <vrk><url ref="https://www.monato.be/2004/008265.html"
              >Parakosmo</url></vrk>
          <lok>2004</lok>
        </fnt>;
      </ekz>
      <ekz>
        tio estas a&ubreve; prem<tld/>o a&ubreve; malsana fantazio
        <fnt>
          <bib>Monato</bib>
          <aut>Boris Kolker</aut>
          <vrk><url ref="https://www.monato.be/2003/007812.html"
              >Estas dan&gcirc;ere esti poeto</url></vrk>
          <lok>2003</lok>
        </fnt>;
      </ekz>
      <ekz>
        subite &scirc;i veki&gcirc;is, kvaza&ubreve; el morta prem<tld/>o
        <fnt><bib>I&scirc;tar</bib><lok>&ccirc;ap. 22</lok></fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="kosxmar.0o">ko&scirc;maro</ref>
  </snc>
  <trd lng="bg">&c_k;&c_o;&c_sh;&c_m;&c_a;&c_r;</trd>
  <trdgrp lng="de">
    <trd>Alptraum</trd>,
    <trd>Albtraum</trd>,
    <trd>Alpdr&uuml;cken</trd>,
    <trd>Alpdruck</trd>
  </trdgrp>
  <trd lng="en">nightmare</trd>
  <trd lng="es">pesadilla</trd>
  <trdgrp lng="fr">
    <trd>cauchemar</trd>,
    <trd>mauvais <ind>r&ecirc;ve</ind></trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>lid&eacute;rcnyom&aacute;s</trd>,
    <trd>r&eacute;m&aacute;lom</trd>
  </trdgrp>
  <trd lng="nl">nachtmerrie</trd>
  <trd lng="ru">&c_k;&c_o;&c_sh;&c_m;&c_a;&c_r;</trd>
</drv>
</art>
