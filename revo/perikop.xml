<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: perikop.xml,v 1.4 2022/03/25 12:53:16 afido Exp $">
<kap>
  <rad>perikop</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>

<drv mrk="perikop.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="perikop.0o.BIB">
    <uzo tip="fak">BIB</uzo>
    <dif>
      <ref tip="super" cel="epizod.0o.BELE">Epizodo<sncref/></ref>,
      <ref tip="super" cel="fragme.0o">fragmento</ref>
      de la biblia teksto destinita por legado dum diservo:
      <ekz>
        mi anta&ubreve;e komentos iomete la faman <tld/>on de la Bona Samariano
        <fnt>
          <aut>P. Cousson</aut>
          <vrk><url ref="http://jerecherche.chez.com/textes/Beregdaroc.htm">Enkonduka prelego en Beregdar&oacute;c</url></vrk>
          <lok>[2010]</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="episto.0o">epistolo</ref>,
      <ref cel="evange.0o">evangelio</ref>
    </refgrp>
  </snc>
  <trd lng="de">Perikope</trd>
  <trd lng="fr">p&eacute;ricope</trd>
  <trd lng="grc">&pi;&epsilon;&rho;&jota;&#x3F0;&omikron;&pi;&eta_ton;</trd>
  <trd lng="pl">perykopa</trd>
  <trd lng="ro">pericop&abreve;</trd>
  <trd lng="uk">&#x443;&#x440;&#x438;&#x432;&#x43E;&#x43A; &#x437; &#x404;&#x432;&#x430;&#x43D;&#x433;&#x435;&#x43B;&#x456;&#x44F;</trd>
</drv>
</art>

