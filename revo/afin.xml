<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
   <art mrk="$Id$">
     <kap>
       <rad>afin</rad>/o
     </kap>

     <drv mrk="afin.0a">
       <kap><tld/>a<fnt>PIV</fnt></kap>
       <uzo tip="fak">MAT</uzo>

       <snc>
         <uzo tip="klr">(fakula &jcirc;argono)</uzo>
         <dif>
           Iel rilatanta al algebraj strukturoj de la tipo
           <ref cel="spac.afina0o">afina spaco</ref>:
           <ekz>
             <tld/>a geometrio.
           </ekz>
         </dif>
       </snc>

       <snc>
         <dif>
           <klr>(p.p. bildigo f inter du <tld/>aj spacoj)</klr>
           Tia, ke f(&tau;+x)=&phi;(&tau;)+f(x), kie &phi; estas
           <ref cel="homomo.0o">homomorfio</ref> inter la respondaj
           vektoraj spacoj, kiuj <ref cel="operac.0i.MAT">operacias</ref> 
super
           la <tld/>aj spacoj.
         </dif>
       </snc>

       <snc>
         <uzo tip="klr">(p.p. reela funkcio f)</uzo>
         <dif>
           Tia, ke f(x)=&alfa;.x+&beta;.
         </dif>
       </snc>
       <trd lng="fr">affine</trd>
     </drv>

   </art>

<!--
$Log$
-->
</vortaro>