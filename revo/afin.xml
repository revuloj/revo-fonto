<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: afin.xml,v 1.22 2021/02/28 12:05:15 revo Exp $">
<kap>
  <rad>afin</rad>/a <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="afin.0a">
  <kap><tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="afin.0a.gxenerale">
    <uzo tip="klr">(fakula &jcirc;argono)</uzo>
    <fnt><bib>MatVort</bib></fnt>
    <dif>
      Iel rilatanta al algebraj strukturoj de la tipo
      <ref cel="spac.afina0o">afina spaco</ref>:
      <ekz>
        <tld/>a <ref cel="geomet1.0o.MAT">geometrio</ref>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="rekt.afina0o"><tld/>a rekto</ref>,
      <ref cel="eben.afina0o"><tld/>a ebeno</ref>,
      <ref cel="hipere.afina0o"><tld/>a hiperebeno</ref>,
      <ref cel="rotaci.afina0o"><tld/>a rotacio</ref>.
    </refgrp>
    <trd lng="be">&c_a;&c_f;&c_ib;&c_n;&c_n;&c_y;</trd>
    <trd lng="ca">af&iacute;</trd>
    <trd lng="en">affine</trd>
    <trd lng="es">af&iacute;n</trd>
    <trd lng="de">affin</trd>
    <trd lng="fr">affine</trd>
    <trd lng="hu">affin</trd>
    <trd lng="it">affine<klr> (mat. e ch.)</klr></trd>
    <trdgrp lng="nl">
      <trd>verwant</trd>,
      <trd>overeenkomstig</trd>
    </trdgrp>
    <trd lng="pl">afiniczny</trd>
    <trd lng="pt">afim</trd>
    <trd lng="ru">&c_a;&c_f;&c_f;&c_i;&c_n;&c_n;&c_y;&c_j;</trd>
    <trd lng="sk">afinn&yacute;</trd>
  </snc>
  <snc mrk="afin.0a.bildigo">
    <fnt><bib>PIV1</bib></fnt>
    <dif>
      <klr>(p.p. <ref cel="bild.0igo.MAT">bildigo</ref>
      <frm am="f">f</frm> 
      inter du <ref cel="spac.afina0o"><tld/>aj spacoj</ref>)</klr>
      Tia, ke <frm am="f(tau+x) = phi(tau)+f(x)">f(&tau;+x) =
      &phi;(&tau;)+f(x)</frm>, 
      kie <frm am="phi">&phi;</frm> estas 
      <ref cel="homomo.0o">homomorfio</ref> inter
      la respondaj vektoraj spacoj, kiuj 
      <ref cel="operac.0i.MAT">operacias</ref> super la <tld/>aj spacoj:
      <ekz>
        la homomorfion <frm am="phi">&phi;</frm> oni nomas asociita al la
        <tld/>a bildigo <frm am="f">f</frm>.
      </ekz>
    </dif>
    <trd lng="be">&c_a;&c_f;&c_ib;&c_n;&c_n;&c_y;</trd>
    <trd lng="ca">af&iacute;</trd>
    <trd lng="en">affine</trd>
    <trd lng="es">af&iacute;n</trd>
    <trd lng="de">affin</trd>
    <trd lng="fr">affine</trd>
    <trd lng="hu">affin</trd>
    <trd lng="it">affine<klr> (mat. e ch.)</klr></trd>
    <trdgrp lng="nl">
      <trd>verwant</trd>,
      <trd>overeenkomstig</trd>
    </trdgrp>
    <trd lng="pl">afiniczny</trd>
    <trd lng="pt">afim</trd>
    <trd lng="ru">&c_a;&c_f;&c_f;&c_i;&c_n;&c_n;&c_y;&c_j;</trd>
    <trd lng="sk">afinn&yacute;</trd>
  </snc>
  <snc mrk="afin.0a.reelafunkcio">
    <fnt><bib>MatVort</bib></fnt>
    <dif>
      <klr>(p.p. reela <ref cel="funkci.0o.MAT">funkcio</ref> 
      <frm am="f">f</frm>)</klr>
      Tia, ke <frm am="f(x) = alpha x + beta">f(x) = &alfa;x+&beta;</frm>.
    </dif>
    <trd lng="be">&c_a;&c_f;&c_ib;&c_n;&c_n;&c_y;</trd>
    <trd lng="ca">af&iacute;</trd>
    <trd lng="en">affine</trd>
    <trd lng="es">af&iacute;n</trd>
    <trd lng="de">affin</trd>
    <trd lng="fr">affine</trd>
    <trd lng="hu">affin</trd>
    <trd lng="it">affine<klr> (mat. e ch.)</klr></trd>
    <trdgrp lng="nl">
      <trd>verwant</trd>,
      <trd>overeenkomstig</trd>
    </trdgrp>
    <trd lng="pl">afiniczny</trd>
    <trd lng="pt">afim</trd>
    <trd lng="ru">&c_a;&c_f;&c_f;&c_i;&c_n;&c_n;&c_y;&c_j;</trd>
    <trd lng="sk">afinn&yacute;</trd>
  </snc>
  <snc mrk="afin.0a.KOMUNE">
    <uzo tip="stl">RAR</uzo>
    <dif>
      Iel rilata, simila, parenca, analoga:
      <ekz>
        starigi kunfrati&gcirc;on inter spiritistoj kaj tiuj 
        homoj, kiuj tra la mondo <tld/>e rilatas al la 
        spiritista doktrino
        <fnt>
          <aut>-</aut>,
          <vrk><url ref="http://archive.is/yAiJr">
          International Spiritist Council</url></vrk>,
          <lok>[2003?]</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="fr">affin</trd>
  </snc>
  <trdgrp lng="cs">
    <trd>afinn&iacute;</trd>,
    <trd>podobn&yacute;</trd>,
    <trd>p&rcaron;&iacute;buzn&yacute; tvarem</trd>
  </trdgrp>
  <trdgrp lng="he">
    <trd>&#x5D3;&#x5D5;&#x5DE;&#x5D4;</trd>,
    <trd>&#x5E7;&#x5E8;&#x5D5;&#x5D1;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>podobn&yacute;</trd>,
    <trd>pr&iacute;buzn&yacute; tvarom</trd>
  </trdgrp>
</drv>

<drv mrk="afin.0eco">
  <kap><tld/>eco</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="afin.0eco.KOMUNE">
    <dif>
      Simileco, havo de komunaj ecoj:
      <ekz>
        en la botelo varma, hermetika
        kongruas la &hcirc;emia <tld/>eco kaj antieco
        <fnt>
          <aut>I. Mad&aacute;ch, trad. K. Kalocsay</aut>, 
          <vrk>La Tragedio de l' Homo</vrk>, 
          <lok>1965</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="fr">affinit&eacute;</trd>
  </snc>
  <trdgrp lng="cs">
    <trd>afinita</trd>,
    <trd>p&rcaron;&iacute;buzenstv&iacute;</trd>,
    <trd>p&rcaron;&iacute;buznost</trd>,
    <trd>slu&ccaron;ovac&iacute; schopnost</trd>
  </trdgrp>
  <trd lng="he">&#x5D6;&#x5B4;&#x5D9;&#x5E7;&#x5B8;&#x5D4;</trd>
  <trdgrp lng="sk">
    <trd>afinita</trd>,
    <trd>pr&iacute;buznos&tcaron;</trd>
  </trdgrp>
</drv>
</art>
