<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>afin</rad>/a
</kap>
<drv mrk="afin.0a">
  <kap><tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="afin.0a.gxenerale">
    <uzo tip="klr">(fakula &jcirc;argono)</uzo>
    <fnt><bib>MatVort</bib></fnt>
    <dif>
      Iel rilatanta al algebraj strukturoj de la tipo
      <ref cel="spac.afina0o">afina spaco</ref>:
      <ekz>
        <tld/>a <ref cel="geomet1.0o.MAT">geometrio</ref>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="rekt.afina0o"><tld/>a rekto</ref>,
      <ref cel="eben.afina0o"><tld/>a ebeno</ref>,
      <ref cel="hipere.afina0o"><tld/>a hiperebeno</ref>,
      <ref cel="rotaci.afina0o"><tld/>a rotacio</ref>.
    </refgrp>
  </snc>
  <snc mrk="afin.0a.bildigo">
    <fnt><bib>PIV1</bib></fnt>
    <dif>
      <klr>(p.p. <ref cel="bild.0igo.MAT">bildigo</ref> <frm><k>f</k></frm> 
      inter du <ref cel="spac.afina0o"><tld/>aj spacoj</ref>)</klr>
      Tia, ke 
      <frm><k>f</k>(&tau;+<k>x</k>) = &phi;(&tau;)+<k>f</k>(<k>x</k>)</frm>, 
      kie <frm>&phi;</frm> estas <ref cel="homomo.0o">homomorfio</ref> inter
      la respondaj vektoraj spacoj, kiuj 
      <ref cel="operac.0i.MAT">operacias</ref> super la <tld/>aj spacoj:
      <ekz>
        la homomorfion <frm>&phi;</frm> oni nomas asociita al la <tld/>a
        bildigo <frm><k>f</k></frm>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="afin.0a.reelafunkcio">
    <fnt><bib>MatVort</bib></fnt>
    <dif>
      <klr>(p.p. reela <ref cel="funkci.0o.MAT">funkcio</ref> 
      <frm><k>f</k></frm>)</klr>
      Tia, ke <frm><k>f</k>(<k>x</k>) = &alfa;<k>x</k>+&beta;</frm>.
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_f;&c_ib;&c_n;&c_n;&c_y;</trd>
  <trd lng="en">affine</trd>
  <trd lng="de">affin</trd>
  <trd lng="fr">affine</trd>
  <trd lng="hu">affin</trd>
  <trdgrp lng="nl">
   <trd>verwant</trd>,
   <trd>overeenkomstig</trd>
  </trdgrp>
  <trd lng="pl">afiniczny</trd>
  <trd lng="pt">afim</trd>
  <trd lng="ru">&c_a;&c_f;&c_f;&c_i;&c_n;&c_n;&c_y;&c_j;</trd>
    <trd lng="sk">afinn&yacute;</trd>
</drv>
</art>
