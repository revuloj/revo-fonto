<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>afin</rad>/a
</kap>
<drv mrk="afin.0a">
  <kap><tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc mrk="afin.0a.gxenerale">
    <uzo tip="klr">(fakula &jcirc;argono)</uzo>
    <dif>
      Iel rilatanta al algebraj strukturoj de la tipo
      <ref cel="spac.afina0o">afina spaco</ref>:
      <ekz>
        <tld/>a <ref cel="geomet1.0o.MAT">geometrio</ref>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="rekt.afina0o"><tld/>a rekto</ref>,
      <ref cel="eben.afina0o"><tld/>a ebeno</ref>,
      <ref cel="hipere.afina0o"><tld/>a hiperebeno</ref>,
      <ref cel="rotaci.afina0o"><tld/>a rotacio</ref>.
    </refgrp>
  </snc>
  <snc mrk="afin.0a.bildigo">
    <dif>
      <klr>(p.p. <ref cel="bild.0igo">bildigo</ref> f inter du
      <ref cel="spac.afina0o"><tld/>aj spacoj</ref>)</klr>
      Tia, ke f(&tau;+x)=&phi;(&tau;)+f(x), kie &phi; estas
      <ref cel="homomo.0o">homomorfio</ref> inter la respondaj
      vektoraj spacoj, kiuj <ref cel="operac.0i.MAT">operacias</ref>
      super la <tld/>aj spacoj:
      <ekz>
        la homomorfion &phi; oni nomas asociita al la <tld/>a
        bildigo f.
      </ekz>
    </dif>
  </snc>
  <snc mrk="afin.0a.reelafunkcio">
    <dif>
      <klr>(p.p. reela <ref cel="funkci.0o.MAT.gxenerale">funkcio</ref> f)</klr>
      Tia, ke f(x)=&alfa;.x+&beta;.
    </dif>
  </snc>
  <trd lng="en">affine</trd>
  <trd lng="de">affin</trd>
  <trd lng="ru">&c_a;&c_f;&c_f;&c_i;&c_n;&c_n;&c_y;&c_j;</trd>
  <trd lng="fr">affine</trd>
  <trd lng="hu">affin</trd>
  <trdgrp lng="nl">
   <trd>verwant</trd>,
   <trd>overeenkomstig</trd>
       </trdgrp>
<trd lng="pt">afim</trd>
</drv>
</art>
