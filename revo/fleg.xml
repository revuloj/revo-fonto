<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>fleg</rad>/i
</kap>
<drv mrk="fleg.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc num="1">
    <dif>
      Prizorgi malsanulon, kaj igi lin observi la kuracadon. 
    </dif>
    <refgrp tip="vid">
      <ref cel="vart.0i">varti</ref>
    </refgrp>
    <trd lng="de">pflegen</trd>
    <trd lng="en">nurse</trd>
    <trd lng="nl">verplegen</trd>
    <trd lng="ru">&c_u;&c_h;&c_a;&c_zh;&c_i;&c_v;&c_a;&c_t;&c_mol; <klr>(&c_z;&c_a; &c_b;&c_o;&c_l;&c_mol;&c_n;&c_y;&c_m;)</klr></trd>
  </snc>
  <snc num="2">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Prizorgi ion:
      <ekz>
        <tld/>i &gcirc;ardenon, vojon, sian popularecon, siajn interesojn;
      </ekz>
      <ekz>
        <tld/>i la rilatojn inter amba&ubreve; landoj;
      </ekz>
      <ekz>
        tiu teatro <tld/>as la klasikan arton.
      </ekz>
    </dif>
    <trdgrp lng="de">
     <trd>pflegen</trd>,
     <trd>warten</trd>,
     <trd>in <ind>Schuss</ind> halten</trd></trdgrp>
    <trd lng="nl">onderhouden</trd>
    <trdgrp lng="ru">
      <trd>&c_o;&c_b;&c_s;&c_l;&c_u;&c_zh;&c_i;&c_v;&c_a;&c_t;&c_mol;</trd>,
      <trd>&c_z;&c_a;&c_b;&c_o;&c_t;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
    </trdgrp>
    <trdgrp lng="en">
      <trd>attend to</trd>,
      <trd>see to</trd>,
      <trd>take care of</trd>
    </trdgrp>
  </snc>
  <trd lng="cs">o&scaron;et&rcaron;ovat</trd>
  <trd lng="es">cuidar</trd>
  <trdgrp lng="fr">
    <trd>soigner<klr tip="ind"> (donner des soins, entretenir)</klr></trd>,
    <trd>entretenir<klr tip="ind"> (maintenir en &eacute;tat)</klr></trd>,
    <trd>prendre <ind>soin</ind> (de)</trd></trdgrp> 
  </drv>
<drv mrk="fleg.0isto">
  <kap><tld/>ist(in)o</kap>
  <snc>
    <dif>
      Homo, kies metio estas <tld/>i malsanulojn.  
    </dif>
  </snc>
  <adm>
  Problemo de duseksaj kapvortoj. Vd adm sub fiancx.
  Korekti trd ru/de/nl/es. <aut>MB</aut>
  </adm>
  <trdgrp lng="de">
     <trd>Krankenschwester</trd>,
     <trd>Krankenpflegerin</trd></trdgrp>
  <trd lng="en">nurse</trd>
  <trdgrp lng="es">
    <trd>enfermero</trd>,
    <trd>enfermera</trd></trdgrp>
  <trdgrp lng="fr">
    <trd>infirmier</trd>,
    <trd>infirmi&egrave;re</trd></trdgrp> 
  <trdgrp lng="nl">
   <trd>verpleger</trd>,
   <trd>verpleegster</trd>
       </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_m;&c_je;&c_d;&c_s;&c_je;&c_s;&c_t;&c_r;&c_a;</trd>,
    <trd>&c_s;&c_i;&c_d;&c_je;&c_l;&c_k;&c_a;</trd>,
    <trd>&c_n;&c_ja;&c_n;&c_ja;</trd>
  </trdgrp>
</drv>
</art>
