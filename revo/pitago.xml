<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>Pitagor</rad>/o
</kap>
<drv mrk="pitago.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">PERS</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      Greklingve: 
      <trd lng="grc">&Pi;&ypsilon;&theta;&alfa;&gamma;&omikron_acute;&rho;&alfa;&sigma_fina;</trd>.
      Greka filozofo kaj matematikisto, 6-a jc a.K.
    </dif>
  </snc>
  <trd lng="fr">Pythagore</trd>
</drv>
<drv mrk="pitago.p0a">
  <kap><tld lit="p"/>a</kap>
  <snc>
    <dif>
      Iel rilatanta al la verko de <tld/>o:
      <ekz>
        <uzo tip="fak">MAT</uzo>
        <fnt><bib>MatVort</bib></fnt>
        <ind><tld lit="p"/>a teoremo</ind>
        <klr>(vd <ref cel="hipote1.0o">hipotenuzo</ref>)</klr>;
        <trd lng="fr">th&eacute;or&egrave;me de Pythagore</trd>
      </ekz>
      <ekz>
        <uzo tip="fak">MAT</uzo>
        <fnt><bib>MatVort</bib></fnt>
        <ind><tld lit="p"/>a triopo</ind> <klr>(tia 
        <ref cel="op.n0o">triopo</ref> el 
        entjeroj (a,b,c), ke a<sup>2</sup>=b<sup>2</sup>+c<sup>2</sup>)</klr>;
        <trd lng="fr">triplet pythagoricien</trd>
      </ekz>
      <ekz>
        <uzo tip="fak">MAT</uzo>
        <fnt><bib>MatVort</bib></fnt>
        <ind><tld lit="p"/>a triangulo</ind> <klr>(tia 
        <ref cel="angul.tri0o">triangulo</ref>, ke la longo de &gcirc;iaj
        lateroj konsistigas <tld lit="p"/>an triopon)</klr>;
        <trd lng="fr">triangle pythagoricien</trd>
      </ekz>
      <ekz>
        <uzo tip="fak">FIL</uzo>
        <tld lit="p"/>a skolo.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>de <ind>Pythagore</ind></trd>,
    <trd>pythagor&eacute;en</trd>,
    <trd>pythagoricien</trd>,
    <trd>pythagorique</trd></trdgrp> 
</drv>
<drv mrk="pitago.p0ismo">
  <kap><tld lit="p"/>ismo</kap>
  <uzo tip="fak">FIL</uzo>
  <snc>
    <dif>
      Doktrino de <tld/>o.
    </dif>
  </snc>
  <trd lng="fr">pythagorisme</trd>
</drv>
</art>

<!--
$Log$
-->
</vortaro>