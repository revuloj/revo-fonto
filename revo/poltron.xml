<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>poltron</rad>/o
</kap>
<drv mrk="poltron.0o">
  <kap><tld/>o<fnt> <bib>PIV1</bib></fnt></kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="poltron.0o.KOMUNE">
    <ref tip="dif" cel="tim.0ulo.KOMUNE">timulo</ref>
    <ekz>
      komence mi timis salti, sed la patro mal&scirc;atis <tld/>ojn
      <fnt>
        <aut>I. Turgenev, trad. A. Kor&jcirc;enkov k.a.</aut>,
        <vrk><url ref="http://esperanto.org/Ondo/Rn-turg1.htm">
        La unua amo</url></vrk>,
        <lok>1993</lok>
      </fnt>.
    </ekz>
  </snc>
  <trdgrp lng="fr">
    <trd>couard<klr> (subst.)</klr></trd>,
    <trd>poltron<klr> (subst.)</klr></trd>
  </trdgrp>
</drv>

<drv mrk="poltron.0a">
  <kap><tld/>a</kap> <fnt><bib>SPV</bib></fnt>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="poltron.0a.KOMUNE">
    <ref tip="dif" cel="kuragx.mal0a.KOMUNE">malkura&gcirc;a</ref>
    <ref tip="dif" cel="tim.0a.KOMUNE">tima</ref>
    <ekz>
      mi ne kondamnas tiun &ccirc;i <tld/>an popolon.
      <fnt>
        <aut>I. Mad&aacute;ch, trad. K. Kalocsay</aut>, 
        <vrk>La Tragedio de l' Homo</vrk>, 
        <lok>1965</lok>
      </fnt>.
    </ekz>
  </snc>
  <trd lng="fr">poltron<klr> (adj.)</klr></trd>
</drv>
</art>

