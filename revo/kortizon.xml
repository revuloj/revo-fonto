<art mrk="$Id: kortizon.xml,v 1.10 2023/12/03 09:58:59 revo Exp $">
<kap>
  <rad>kortizon</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="kortizon.0o">
  <kap><tld/>o</kap>
  <snc mrk="kortizon.0o.FIZL">
    <uzo tip="fak">FIZL</uzo>
    <uzo tip="fak">MED</uzo>
    <dif>
      Steroida <ref tip="super" cel="hormon.0o.FIZL">hormono</ref>,
      trovita je 1935 en la &scirc;elo de apudrenaj glandoj, kaj
      uzata kiel kontra&ubreve;inflama kuracilo:
      <ekz>
        graso-desu&ccirc;ado estas beliga operacio, <klr>[&#x2026;]</klr>
        la hodia&ubreve;a plej ofta metodo uzas kelklitran miksa&jcirc;on el sterila,
        
        izotona akvo, narkota&jcirc;o (sendoloriga&jcirc;o), natria
        
        bikarbonato kaj
        <tld/>o
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=232088">Liposukcio</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_k;&c_a;&c_r;&c_t;&c_y;&c_z;&c_o;&c_n;</trd>
    <trdgrp lng="de">
      <trd>Kortison</trd>,
      <trd>Cortison</trd>
    </trdgrp>
    <trd lng="fa">&f_k;&a_w;&a_r;&a_t;&f_y;&a_z;&a_w;&a_n;</trd>
    <trd lng="fr">cortisone</trd>
    <trd lng="hu">kortizon</trd>
    <trd lng="nl">cortisone</trd>
    <trd lng="pl">kortyzon</trd>
    <trd lng="pt">cortisona</trd>
    <trd lng="ro">cortizon</trd>
    <trd lng="ru">&c_k;&c_o;&c_r;&c_t;&c_i;&c_z;&c_o;&c_n;</trd>

    <trdgrp lng="zh">
    <trd>&#x80BE;&#x4E0A;&#x817A;&#x76AE;&#x8D28;&#x7D20; <pr>sh&#xE8;nsh&#xE0;ngxi&#xE0;np&#xED;zh&#xED;s&#xF9;</pr></trd>,
    <trd>&#x53EF;&#x7684;&#x677E; <pr>k&#x11B;d&#xEC;s&#x14D;ng</pr></trd>
  </trdgrp>
</snc>
</drv>
</art>
