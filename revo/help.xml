<drv mrk="help.antauxmal0i">
  <kap>anta&ubreve;mal<tld/>i</kap>
  <fnt><bib>PIV1</bib>,
  <lok>artikolo &leftquot;preventi&rightquot;</lok></fnt>
  <snc>
    <dif>
      Neebligi, ke io malbona okazu, aperu.
    </dif>
    <refgrp tip="sin">
      <ref cel="preven.0i">preventi</ref>;
    </refgrp>
    <refgrp tip="vid">
      <ref cel="gard.antaux0i">anta&ubreve;gardi</ref>;
      Preska&ubreve;aj sinonimoj:
      <ref cel="for.antaux0igi">anta&ubreve;forigi</ref>,
      <ref cel="halt.antaux0igi">anta&ubreve;haltigi</ref>
    </refgrp>
  </snc>     
  <trd lng="br">diarbenn</trd>
  <trd lng="en">prevent</trd>
  <trdgrp lng="fr">
    <trd>&eacute;viter<klr tip="ind"> (la survenue de)</klr></trd>,
