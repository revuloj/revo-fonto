<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: vertic.xml,v 1.34 2022/03/28 11:08:54 revo Exp $">
<kap>
<ofc>8</ofc> <rad>vertic</rad>/o 
<fnt>Z</fnt> <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="vertic.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="vertic.0o.punkto">
    <dif>
      Rimarkinda <ref tip="super" cel="punkt.0o.spaco">punkto</ref> en
      <ref cel="figur.geometria0o">geometria figuro</ref>, interalie:
    </dif>
    <subsnc mrk="vertic.0o.plurlatero">
      <fnt><bib>MatTerm</bib><lok>p. 27, pri triangulo</lok></fnt>
      <dif>
        <klr>(de <ref tip="malprt" cel="later.plur0o">plurlatero</ref>)</klr>
        &ccirc;iu <ref tip="super" cel="rand.0o.figuro">rando</ref>
        de &gcirc;iaj <ref cel="later.0o.streko">lateroj</ref>:
        <ekz>
          en regula stelokvinlatero, oni povas ekhavi kvinpintan 
          stelon per pentrado de linio de la unua <tld/>o al la tria 
          <tld/>o, de la tria <tld/>o al la kvina <tld/>o, de la kvina 
          <tld/>o al la dua <tld/>o, de la dua <tld/>o al la kvara
          <tld/>o, kaj de la kvara <tld/>o al la unua <tld/>o
          <fnt>
            <bib>Viki</bib>
            <lok><url ref="https://eo.wikipedia.org/?curid=83783">Stelo (figuro)</url></lok>
          </fnt>;
        </ekz>
      </dif>
    </subsnc>
    <subsnc mrk="vertic.0o.pluredro">
      <fnt><bib>MatTerm</bib><lok>p. 30</lok></fnt>
      <dif>
        <klr>(de <ref tip="malprt" cel="edr.plur0o">pluredro</ref>)</klr>
        &ccirc;iu <ref tip="super" cel="vertic.0o.plurlatero">vertico
        <sncref/></ref>
        de &gcirc;iaj <ref cel="fac.0o.pluredro">facoj</ref>:
        <ekz>
          pluredro estas solido limigita &ccirc;iuflanke per ebenaj edroj, <klr>[&#x2026;]</klr>
          &ccirc;e <tld/>o kuni&gcirc;as minimume 3 lateroj
          <fnt>
            <bib>Viki</bib>
            <lok><url ref="https://eo.wikipedia.org/?curid=24133">Pluredro</url></lok>
          </fnt>;
        </ekz>
      </dif>
    </subsnc>
    <subsnc mrk="vertic.0o.konuso">
      <fnt><bib>MatVort</bib></fnt>
      <dif>
        <klr>(de <ref tip="malprt" cel="konus.0o.surfaco">konuso</ref>)</klr>
        la komuna punkto de &gcirc;iaj naskantoj;
      </dif>
    </subsnc>
    <subsnc mrk="vertic.0o.angulo">
      <fnt><bib>MatTerm</bib><lok>p. 26</lok></fnt>
      <dif>
        <klr>(de <ref cel="angul.0o.figuro">angulo</ref>)</klr>
        la komuna origino de &gcirc;iaj lateroj.
      </dif>
    </subsnc>
    <trdgrp lng="de">
      <trd>Ecke</trd>,
      <trd>Spitze</trd>,
      <trd>Scheitel</trd>
    </trdgrp>
    <trd lng="be">&c_v;&c_ja;&c_r;&c_sh;&c_y;&c_n;&c_ja; <klr tip="ind">(&c_g;&c_je;&c_a;&c_m;&c_e;&c_t;&c_r;&c_y;&c_ch;&c_n;&c_a;&c_j;
    &c_f;&c_ib;&c_g;&c_u;&c_r;&c_y;)</klr></trd>
    <trd lng="ca">v&egrave;rtex</trd>
    <trd lng="en">vertex</trd>
    <trd lng="es">v&eacute;rtice</trd>
    <trd lng="fr">sommet<klr tip="ind"> (d'une figure
    g&eacute;ometrique)</klr></trd>
    <trd lng="nl">top<klr tip="ind"> (v.e.driehoek)</klr></trd>
    <trd lng="pl">wierzcho&lstroke;ek<klr tip="ind"> (k&aogonek;ta, wielok&aogonek;ta,
    wielo&sacute;cianu)</klr></trd>
    <trd lng="ru">&c_v;&c_je;&c_r;&c_sh;&c_i;&c_n;&c_a;</trd>
  </snc>
  <snc mrk="vertic.0o.grafeo">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>KompLeks</bib></fnt>
    <dif>
      Elemento de <ref tip="malprt" cel="grafe.0o.strukturo">grafeo</ref>,
      kiu unuope difinas nodon de la grafeo, kaj pare kun alia <tld/>o e&gcirc;on:
      <ekz>
        kutime, grafeo estas prezentita kiel aro de punktoj (<tld/>oj) ligitaj de linioj (la e&gcirc;oj)
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=87601">Grafeo</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      Ecoj de vertico:
      <ref cel="incid.0a.grafee">incida</ref>,
      <ref cel="najbar.0a.grafee">najbara</ref>,
      <ref cel="izol.0ita.vertico">izolita</ref>.
    </refgrp>
    <refgrp tip="vid">
      Atributoj de vertico:
      <ref cel="grad.0o.grafea_vertico">grado</ref>,
      <ref cel="grad.eliraduon0o">elira duongrado</ref>,
      <ref cel="grad.eniraduon0o">enira duongrado</ref>.
    </refgrp>
    <rim>
      Anstata&ubreve;e trovi&gcirc;as <ctl>nodo</ctl> en
      <fnt><bib>MatVort</bib></fnt>.
    </rim>
    <trdgrp lng="be">
      <trd>&c_v;&c_ja;&c_r;&c_sh;&c_y;&c_n;&c_ja;</trd>,
      <trd>&c_v;&c_u;&c_z;&c_je;&c_l;</trd>
    </trdgrp>
    <trd lng="ca">node</trd>
    <trdgrp lng="de">
      <trd>Knoten</trd>,
      <trd>Ecke</trd>
    </trdgrp> 
    <trdgrp lng="en">
      <trd>vertex</trd>,
      <trd>node</trd></trdgrp> 
    <trdgrp lng="fr">
      <trd>sommet<klr tip="ind"> (d'un graphe)</klr></trd>,
      <trd>n&oelig;ud<klr tip="ind"> (d'un graphe)</klr></trd></trdgrp>
    <trd lng="pl">wierzcho&lstroke;ek<klr tip="ind"> (grafu)</klr></trd>
    <trdgrp lng="ru">
      <trd>&c_v;&c_je;&c_r;&c_sh;&c_i;&c_n;&c_a;</trd>,
      <trd>&c_u;&c_z;&c_je;&c_l;</trd>
    </trdgrp>
  </snc>
  <trd lng="ca">v&egrave;rtex</trd>
  <trd lng="cs">vrchol <klr>(abstraktn&iacute;ho symplexu| polygonu|
  diagramu)</klr></trd>
  <trd lng="el">&gamma;&omega;&ny;&jota_ton;&alfa;</trd>
  <trd lng="hu">cs&uacute;cs</trd>
  <trd lng="pt">v&eacute;rtice</trd>
  <trd lng="sk">vrchol uhla</trd>
  <trd lng="uk">&#x432;&#x435;&#x440;&#x448;&#x438;&#x43D;&#x430; (&#x43A;&#x443;&#x442;&#x430; &#x456; &#x442;.&#x43F;.)</trd>
</drv>
</art>
