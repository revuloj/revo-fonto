<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>8</ofc>
<rad>vertic</rad>/o
<fnt>Z</fnt>
</kap>
<drv mrk="vertic.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      Rimarkinda <ref tip="super" cel="punkt.0o.spaco">punkto</ref> en
      <ref cel="figur.geometria0o">geometria figuro</ref> kaj
      interalie:
    </dif>
    <subsnc mrk="vertic.0o.plurlatero">
      <dif>
        <klr>(p.p. <ref tip="malprt" cel="later.plur0o">plurlatero</ref>)</klr>
        &ccirc;iu <ref tip="super" cel="ekstre.0o.segmento">ekstremo</ref>
        de &gcirc;iaj <ref cel="later.0o.streko">lateroj</ref>;
      </dif>
    </subsnc>
    <subsnc mrk="vertic.0o.pluredro">
      <dif>
        <klr>(p.p. <ref tip="malprt" cel="edr.plur0o">pluredro</ref>)</klr>
        &ccirc;iu
        <ref tip="super" cel="vertic.0o.plurlatero">vertico</ref>
        <sncref ref="vertic.0o.plurlatero"/>
        de la plurlateroj, &gcirc;in limantaj;
      </dif>
    </subsnc>
    <subsnc mrk="vertic.0o.konuso">
      <dif>
        <klr>(p.p. <ref tip="malprt" cel="konus.0o.surfaco">konuso</ref>)</klr>
        la komuna punkto de &gcirc;iaj naskantoj;
      </dif>
    </subsnc>
    <subsnc mrk="vertic.0o.angulo">
      <dif>
        <klr>(de <ref cel="angul.0o.figuro">angulo</ref>)</klr>
        la komuna origino de &gcirc;iaj lateroj.
      </dif>
    </subsnc>
  </snc>
  <trdgrp lng="de">
    <trd>Scheitel</trd>,
    <trd>Spitze</trd>
  </trdgrp>
  <trd lng="fr">sommet<klr tip="ind"> (d'une figure)</klr></trd>
  <trd lng="nl">top<klr tip="ind"> (v.e.driehoek)</klr></trd>
  <trd lng="ru">&c_v;&c_je;&c_r;&c_sh;&c_i;&c_n;&c_a;</trd>
</drv>
</art>
