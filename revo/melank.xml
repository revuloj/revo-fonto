<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>3</ofc>
      <rad>melankoli</rad>/o
    </kap>

    <drv mrk="melank.0o">
      <kap><tld/>o</kap>
      <snc>
        <dif>
          Da&ubreve;ra reva, ordinare milda
          <ref tip="super" cel="gaj.mal0o">malgajo</ref>:
          <ekz>
            la franca vorto <klr>...</klr> elvokas ian dol&ccirc;an
            <tld/>on, mankon de forto
            <fnt><bib>BonaLingvo</bib>, <lok>p. 104a</lok></fnt><klr>...</klr>
          </ekz>
        </dif>
      </snc>
      <ref tip="vid" cel="splen.0o">spleno</ref>
      <trd lng="be">&c_m;&c_e;&c_l;&c_ja;&c_n;&c_h;&c_o;&c_l;&c_ib;&c_ja;</trd>
      <trd lng="br">melkoni</trd>
      <trdgrp lng="de">
        <trd>Melancholie</trd>,
        <trd>Schwermut</trd>,
        <trd>Tr&uuml;bsinn</trd>
      </trdgrp>
      <trdgrp lng="fr">
        <trd>mal de vivre</trd>,
        <trd>m&eacute;lancolie</trd>
      </trdgrp>
      <trdgrp lng="hu">
        <trd>melank&oacute;lia</trd>,
        <trd>m&eacute;lab&uacute;</trd>,
        <trd>b&uacute;skomors&aacute;g</trd>
      </trdgrp>
      <trdgrp lng="nl">
        <trd>melancholie</trd>,
        <trd>zwaarmoedigheid</trd>
      </trdgrp>
      <trd lng="pt">melancolia</trd>
      <trdgrp lng="ru">
        <trd>&c_g;&c_r;&c_u;&c_s;&c_t;&c_mol;</trd>,
        <trd>&c_u;&c_n;&c_y;&c_n;&c_i;&c_je;</trd>,
        <trd>&c_h;&c_a;&c_n;&c_d;&c_r;&c_a;</trd>,
        <trd>&c_m;&c_je;&c_l;&c_a;&c_n;&c_h;&c_o;&c_l;&c_i;&c_ja;</trd>
      </trdgrp>
    </drv>

    <drv mrk="melank.0a">
      <kap><tld/>a</kap>
      <snc mrk="melank.0a.melankolisenta">
        <dif>
          Malgajeta, sentanta <tld/>on:
          <ekz>
            la viro sidis <tld/>a dum longa tempo
            <fnt>
              <aut>Will Green</aut>,
              <vrk>Gantoj</vrk>,
              <bib>Monato</bib>
              <lok>jaro 1997a, numero 5a, p. 24a</lok>
            </fnt>.
          </ekz>
        </dif>
        <trd lng="de">melankolisch</trd>
        <trdgrp lng="hu">
          <trd>melankolikus</trd>,
          <trd>m&eacute;lab&uacute;s</trd>,
          <trd>b&uacute;skomor</trd>
        </trdgrp>
        <trdgrp lng="ru">
          <trd>&c_g;&c_r;&c_u;&c_s;&c_t;&c_n;&c_y;&c_j;</trd>,
          <trd>&c_m;&c_je;&c_l;&c_a;&c_n;&c_h;&c_o;&c_l;&c_i;&c_ch;&c_n;&c_y;&c_j;</trd>
        </trdgrp>
      </snc>
      <snc mrk="melank.0a.PSI">
        <uzo tip="fak">PSI</uzo>
        <dif>
          Propra al <tld/>ulo:
          <ekz>
            la <tld/>a <ref tip="super" cel="temper.0o">temperamento</ref>.
          </ekz>
        </dif>
        <trd
lng="ru">&c_m;&c_je;&c_l;&c_a;&c_n;&c_h;&c_o;&c_l;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
      </snc>
      <snc mrk="melank.0a.melankoliiga">
        <ref tip="dif" cel="morn.0a">morna</ref>
        <ekz>
          jen lia vida&jcirc;o de tiu &leftquot;<tld/>a montetaro&rightquot;
          <fnt>
            <aut>A. Giridhar Rao</aut>,
            <vrk>La triumfo de rezono (Arthur Conan Doyle, La &Ccirc;ashundo de la
              Baskerviloj)</vrk>,
            <bib>Monato</bib>
            <lok>jaro 2000a, numero 10a, p. 30a</lok></fnt>.
        </ekz>
        <trd lng="hu">komor</trd>
        <trdgrp lng="ru">
          <trd>&c_p;&c_je;&c_ch;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>,
          <trd>&c_u;&c_n;&c_y;&c_l;&c_y;&c_j;</trd>
        </trdgrp>
      </snc>
      <rim mrk="melank.0a.RIM.1">
        <ctl>Melankolia</ctl> celas precipe la internan senton de homo,
        <ctl>Moroza</ctl> prefere lian eksteran aspekton.
        <ctl>Morna</ctl> prefere la etoson de loko a&ubreve; cirkonstancoj.
        Praktike, &ccirc;ar etoso, sento kaj aspekto sin influas, &ccirc;iu el la vortoj
        povas surpreni alterne &ccirc;iun nuancon.
        <aut>&jcirc;v</aut>
      </rim>
      <trd lng="br">melkonius</trd>
      <trd lng="fr">m&eacute;lancolique</trd>
      <trd lng="pt">melanc&oacute;lico</trd>
    </drv>

    <drv mrk="melank.0ulo">
      <kap><tld/>ulo</kap>
      <snc mrk="melank.0ulo.PSI">
        <uzo tip="fak">PSI</uzo>
        <dif>
          Homo kies <ref tip="super" cel="temper.0o">temperamenton</ref>
          karakterizas malforta ekscitemo, emocioj profundaj kaj da&ubreve;remaj:
          <ekz>
            la sinjorinoj nomis lin &ccirc;arma <tld/>ulo,
            sed la virinoj ne ekzistis plu por li
            <fnt>
              <aut>I. Turgenjev, tr. Kabe</aut>:
              <vrk>Patroj kaj filoj</vrk>.
              <lok>Inko Tyreso 2001. &dash; &Ccirc;ap. 7a.</lok>
            </fnt>.
          </ekz>
        </dif>
      </snc>
      <trd lng="de">Melankoliker</trd>
      <trd lng="pl">melancholik</trd>
      <trd lng="ru">&c_m;&c_je;&c_l;&c_a;&c_n;&c_h;&c_o;&c_l;&c_i;&c_k;</trd>
    </drv>

  </art>
