<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>facil</rad>/a
</kap>
<drv mrk="facil.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc num="1">
    <dif>
      Senpene farebla:
      <ekz>
        <tld/>a laboro<fnt>B</fnt>,
      </ekz>
      <ekz>
        tasko, problemo, lingvo, vojo<fnt>B</fnt>, spiro;
      </ekz>
      <ekz>
        <tld/>aj versoj
        <klr>(kiuj &scirc;ajnas senpene faritaj k fluantaj)</klr>.
      </ekz> 
    </dif>
    <trdgrp lng="ru">
      <trd>&c_l;&c_jo;&c_g;&c_k;&c_i;&c_j;</trd>,
      <trd>&c_n;&c_je;&c_t;&c_r;&c_u;&c_d;&c_n;&c_y;&c_j;</trd>
    </trdgrp>
  </snc>
  <snc num="2">
    <dif>
      Senpene eltenebla, apena&ubreve; sentebla, neintensa:
      <ekz>
        <tld/>a <klr>(milda)</klr> vento<fnt>Z</fnt>,
        klimato, ripro&ccirc;o;
      </ekz>
      <ekz>
        <tld/>a <klr>(neforta)</klr> rideto,
        saluto<fnt>Z</fnt>, dormo.
      </ekz>
    </dif>
    <trd lng="ru">&c_l;&c_jo;&c_g;&c_k;&c_i;&c_j; <klr>(&c_v; &c_p;&c_je;&c_r;&c_je;&c_n;&c_o;&c_s;&c_n;&c_o;&c_m; &c_s;&c_m;&c_y;&c_s;&c_l;&c_je;)</klr></trd>
  </snc>
  <trd lng="cs">snadn&yacute;</trd>
<trdgrp lng="de">
   <trd>einfach</trd>,
   <trd>leicht</trd></trdgrp>
  <trd lng="en">easy</trd>
</drv>
<drv mrk="facil.0e">
  <kap><tld/>e</kap>
  <snc>
    <dif>
      La&ubreve; <tld/>a maniero:
      <ekz>
        <tld/>e malvarmumi
        <fnt>(<aut>Zamenhof</aut>: <vrk>Fundamento de Esperanto</vrk>,
        <lok>Ekzercaro, &para; 42</lok>)</fnt>;
      </ekz>
      <ekz>
        <tld/>e forgesi, pardoni, paroli;
      </ekz>
      <ekz>
        esp-o estas <tld/>e lernebla.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="ru">
    <trd>&c_l;&c_je;&c_g;&c_k;&c_o;</trd>,
    <trd>&c_s; &c_l;&c_jo;&c_g;&c_k;&c_o;&c_s;&c_t;&c_mol;&c_ju;</trd>
  </trdgrp>
</drv>
<drv mrk="facil.0igi">
  <kap><tld/>igi</kap>
  <snc num="1">
    <dif>
      Igi ion <tld/>e farebla:
      <ekz>
        <tld/>igi al iu la laboron.
      </ekz>
    </dif>
    <trdgrp lng="ru">
      <trd>&c_o;&c_b;&c_l;&c_je;&c_g;&c_ch;&c_i;&c_t;&c_mol;</trd>,
      <trd>&c_u;&c_p;&c_r;&c_o;&c_s;&c_t;&c_i;&c_t;&c_mol;</trd>
    </trdgrp>
  </snc>
  <snc num="2">
    <dif>
      Mildigi, kvietigi:
      <ekz>
        <tld/>igi la koron;
      </ekz>
      <ekz>
        rakontu al mi vian mal&gcirc;ojon, per tio vi eble
        <tld/>igos vian animon<fnt>Z</fnt>
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="pez">malpezigi</ref>,
      <ref cel="sxargx">sen&scirc;ar&gcirc;igi</ref>.
    </refgrp>
    <refgrp tip="vid">
      <ref cel="ricev.0i">ricevi</ref>.
    </refgrp>
    <trdgrp lng="ru">
      <trd>&c_s;&c_m;&c_ja;&c_g;&c_ch;&c_i;&c_t;&c_mol;</trd>,
      <trd>&c_o;&c_b;&c_l;&c_je;&c_g;&c_ch;&c_i;&c_t;&c_mol; <klr>(&c_d;&c_u;&c_sh;&c_u;)</klr></trd>
    </trdgrp>
  </snc>
  <trdgrp lng="de">
    <trd>vereinfachen</trd>,
    <trd>erleichtern</trd></trdgrp>
</drv>
<drv mrk="facil.mal0ajxo">
  <kap>mal<tld/>a&jcirc;o</kap>
  <snc>
    <dif>
      Io pene farebla a&ubreve; plenumebla; malhelpa&jcirc;o 
    </dif>
    <refgrp tip="sin">
      <ref cel="bar.0o">baro</ref>,
      <ref cel="punkt">frotpunkto</ref>,
      <ref cel="implik">impliko</ref>,
      <ref cel="dorn.0o">dorno</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Schwierigkeit</trd>
  <trdgrp lng="ru">
    <trd>&c_z;&c_a;&c_t;&c_r;&c_u;&c_d;&c_n;&c_je;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_t;&c_r;&c_u;&c_d;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>
<drv mrk="facil.0anima">
  <kap><tld/>anima<fnt>Z</fnt></kap>
  <snc>
    <dif>
      Senpripensa, senkonsidera, neserioza. 
    </dif>
  </snc>
  <trd lng="de">leichtfertig</trd>
  <trd lng="ru">&c_l;&c_je;&c_g;&c_k;&c_o;&c_m;&c_y;&c_s;&c_l;&c_je;&c_n;&c_n;&c_y;&c_j;</trd>
</drv>
<drv mrk="facil.0pieda">
  <kap><tld/>pieda</kap>
  <snc>
    <dif>
      <tld/>e movanta la piedojn, <tld/>e iranta.  
    </dif>
  </snc>
  <trd lng="de">leichtf&uuml;&szlig;ig</trd>
  <trdgrp lng="ru">
    <trd>&c_l;&c_je;&c_g;&c_k;&c_o;&c_n;&c_o;&c_g;&c_i;&c_j;</trd>,
    <trd>&c_b;&c_y;&c_s;&c_t;&c_r;&c_o;&c_n;&c_o;&c_g;&c_i;&c_j;</trd>
  </trdgrp>
</drv>
</art>
