<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>bru</rad>/i
</kap>
<drv mrk="bru.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc num="1">
    <dif>
      A&ubreve;digi konfuzajn sonojn sen harmonia eco:
      <ekz>
        <tld/>as la vento tra la arboj, la ondoj de la maro;
      </ekz>
      <ekz> 
        <tld/>as militkrioj tra la mondo;
      </ekz>
      <ekz>
        &scirc;uldo ne <tld/>as, tamen dormon detruas
        <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>.
      </ekz> 
    </dif>
    <refgrp tip="vid">
      <ref cel="plauxd.0i">pla&ubreve;di</ref>,
      <ref cel="krak.0i">kraki</ref>,
      <ref cel="klak.0i">klaki</ref>,
      <ref cel="eksplo.0i">eksplodi</ref>,
      <ref cel="tondr.0i">tondri</ref>,
      <ref cel="tumult.0i">tumulti</ref>,
      <ref cel="sibl.0i">sibli</ref>,
      <ref cel="susur.0i">susuri</ref>,
      <ref cel="mugx.0i">mu&gcirc;i</ref>,
      <ref cel="sonor.0i">sonori</ref>,
      <ref cel="tint.0i">tinti</ref>,
      <ref cel="zum.0i">zumi</ref>,
      <ref cel="grinc.0i">grinci</ref>,
      <ref cel="knar.0i">knari</ref>,
      <ref cel="cxirp.0i">&ccirc;irpi</ref>.
    </refgrp>
    <refgrp tip="ant">
      <ref cel="silent.0i">silenti</ref>.
    </refgrp>
    <trd lng="de">l&auml;rmen</trd>
    <trdgrp lng="fr">
      <trd>faire du bruit</trd>,
      <trd>bruire</trd></trdgrp> 
  </snc>
  <snc num="2">
    <dif>
      <tld lit="B"/>e krii pro kolero, protesto. 
    </dif>
    <trdgrp lng="fr">
      <trd>gueuler <klr tip="ind">(protester)</klr></trd>,
      <trd>faire du <ind>foin</ind> <klr tip="ind">(protester)</klr></trd>,
      <trd>faire du <ind>scandale</ind></trd></trdgrp> 
  </snc>
  <snc num="3">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Klopodi por atentigi la publikon:
      <ekz>
        oni multe <tld/>as pri tiu libro;
      </ekz>
      <ekz>
        se e&ccirc; la tuta mondo <tld/>os pri nia afero<fnt>Z</fnt>.
      </ekz> 
    </dif>
    <trd lng="fr">faire grand <ind>bruit</ind> (de)</trd>
  </snc>
  <trd lng="en">noisy</trd>
  <trd lng="ru">&c_sh;&c_u;&c_m;&c_je;&c_t;&c_mol;</trd>
</drv>
<drv mrk="bru.0o">
  <kap><tld/>o</kap>
  <snc num="1">
    <dif>
      Aro da konfuzaj sonoj:
      <ekz>
        ne faru tian <tld/>on!
      </ekz>
      <ekz>
        <tld/>o de rompo;
      </ekz>
      <ekz>
        <tld/>o metala, pla&ubreve;da, raspa;
      </ekz>
      <ekz>
        pa&scirc;<tld/>o;
      </ekz>
      <ekz>
        <tld/>o de susurado de folioj.
      </ekz>
    </dif>
    <trd lng="de">L&auml;rm</trd>
    <trd lng="ru">&c_sh;&c_u;&c_m;</trd>
  </snc>
  <snc num="2">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Sensacia famo:
      <ekz>
        la alveno de la ambasado ka&ubreve;zis multan <tld/>on;
      </ekz>
      <ekz>
        multe da <tld/>o por nenio;
      </ekz>
      <ekz>
        pli da <tld/>o <klr>(fanfaronado)</klr> ol da faro<fnt>Z</fnt>
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="frakas.0o0ado">frakaso</ref>.
    </refgrp>
    <trd lng="de">Aufsehen</trd>
    <trdgrp lng="ru">
      <trd>&c_sh;&c_u;&c_m;</trd>,
      <trd>&c_sh;&c_u;&c_m;&c_i;&c_h;&c_a;</trd>
    </trdgrp>
  </snc>
  <trdgrp lng="fr">
    <trd>bruit</trd>,
    <trd>tapage</trd>,
    <trd>scandale</trd>,
    <trd>vacarme</trd></trdgrp> 
</drv>
<drv mrk="bru.0a">
  <kap><tld/>a</kap>
  <snc num="1">
    <dif>
      <tld lit="B"/>anta, la&ubreve;tega:
      <ekz>
        <tld/>a kunularo.
      </ekz>
    </dif>
    <trdgrp lng="de"><trd>l&auml;rmig</trd>, <trd>laut</trd></trdgrp>
  </snc>
  <snc num="2">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Sensacia, altiranta la atenton:
      <ekz>
        <tld/>a sukceso<fnt>Z</fnt>;
      </ekz>
      <ekz>
        fari <tld/>an reklamon.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>bruyant</trd>,
    <trd>braillard</trd>,
    <trd>tapageur</trd></trdgrp> 
  <trd lng="ru">&c_sh;&c_u;&c_m;&c_n;&c_y;&c_j;</trd>
</drv>
<drv mrk="bru.0ero">
  <kap><tld/>ero</kap>
  <uzo tip="fak">FON</uzo>
  <snc>
    <dif>
      &Ccirc;iu fonemo konsistanta el aervibradoj de senregula periodeco (ekz.
      s, S, f, &hcirc;, p, t, k).
    </dif>
    <refgrp tip="vid">
      <ref cel="konson1.0o">konsonanto</ref>,
      <ref cel="sonor.0o">sonoro</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Laut</trd>
</drv>
</art>
