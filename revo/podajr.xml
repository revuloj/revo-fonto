<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>podajr</rad>/o
</kap>
<drv mrk="podajr.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 35</lok></fnt>
  <snc>
    <dif>
      <klr>(de ebena <ref tip="super" cel="kurb.0o.MAT">kurbo</ref> 
      <frm>K</frm>, rilate al punkto <frm>O</frm> en la sama ebeno)</klr>
      Ebena kurbo, konsistanta el &ccirc;iuj
      ortaj <ref cel="projek.0ajxo.MAT">projekcia&jcirc;oj</ref> 
      de <frm>O</frm> al la tan&gcirc;antoj de <frm>K</frm>:
      <ekz>
        <ref cel="kardio.0o">kardioido</ref> estas
        <tld/>o de cirklo rilate al punkto de &gcirc;i.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Fu&szlig;punkt[s]kurve</trd>,
    <trd>Fu&szlig;punktenkurve</trd>
  </trdgrp>
  <trd lng="en">pedal</trd>
  <trd lng="fr">podaire</trd>
  <trdgrp lng="pl">
    <trd>spodkowa</trd>,
    <trd>podera</trd></trdgrp> 
  <trd lng="ru">&c_p;&c_o;&c_d;&c_o;&c_sh;&c_v;&c_je;&c_n;&c_n;&c_a;&c_ja; <ind>&c_k;&c_r;&c_i;&c_v;&c_a;&c_ja;</ind></trd>
</drv>
</art>

