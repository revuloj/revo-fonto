<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id: legxer.xml,v 1.1 2023/05/04 17:24:59 afido Exp $">
    <kap>
      <rad>le&gcirc;er</rad>/a
      <fnt><bib>PIV1</bib></fnt>
    </kap>

<drv mrk="legxer.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      <ref tip="super" cel="strikt.mal0a">Malstrikta</ref>, 
      <ref cel="pen.sen0e">senpena</ref>, ne<ref tip="ant" cel="serioz.0a">serioza</ref>, 
      <ref cel="frivol.0a.maldeca">frivoleta</ref>:
      <ekz>
        li estas ironie bonintenca poeto, kiu &gcirc;uige pikas per <tld/>tonaj versoj
        <fnt>
          <bib>EeP</bib>
          <lok>Dua Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[li]</klr> multe &scirc;atas sian amikon Baniko kaj precipe ties <tld/>an 
        edzinon
        <fnt>
          <bib>KrB</bib>
          <lok>Averto</lok>
        </fnt>;
      </ekz>
      <ekz>
        damne, kia rafineco, kiam vi <tld/>e malstre&ccirc;is la korpon, kunmetinte la manojn
        postnuke
        <fnt>
          <bib>SkandalJozef</bib>
          <lok>Plendoj de Jozefo arestita</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;i respondis nur per <tld/>a kapklino
        <fnt>
          <bib>Kiso</bib>
          <lok>&Aring;GE</lok>
        </fnt>;
      </ekz>
      <ekz>
        de la maro blovis <tld/>a sala vento
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="http://steloj.de/esperanto/monato2/007140.html"
              >de Julian Modest</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        la noveloj plej ofte havas etoson <tld/>an, tamen &ccirc;iam kun baza akordo serioza
        a&ubreve; pripensinda
        <fnt>
          <bib>Kiso</bib>
          <lok>Anta&ubreve;parolo</lok>
        </fnt>;
      </ekz>
      <ekz>
        Rafo lante etendis la manojn kaj <tld/>e tenlevis dumane tiun lotusfloron
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="http://steloj.de/esperanto/monato1/monato-9506-kiso.txt"
              >de Shi Chengtai</url></vrk>
          <lok>95/06</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="facil.0a.eltenebla">facila<sncref/></ref>
    </refgrp>
<ref tip="ant" cel="sever.0a">severa</ref>
    <trdgrp lng="de">
      <trd>locker <klr>(Stil, Verhalten)</klr></trd>,
      <trd>leicht <klr>(Stil, Ber&uuml;hrung)</klr></trd>
    </trdgrp>
    <trd lng="en">casual</trd>
  </snc>
</drv>

  </art>

