<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: arogan.xml,v 1.31 2024/04/11 07:24:07 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>arogant</rad>/a
</kap>
<drv mrk="arogan.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc mrk="arogan.0a.trofiera">
    <dif>
      Ofende <ref tip="super" cel="fier.0a.trofiera">fiera</ref>,
      <ref tip="vid" cel="respek.mal0a">malrespekta</ref>;
      sin konsideranta supera al aliaj homoj:
      <ekz>
        <tld/>a entrepreno
        <fnt>
          <bib>Ifigenio</bib>
        </fnt>;
      </ekz>
      <ekz>
        popolo <tld/>a, kiu ne respektos maljunulon kaj ne kompatos junulon
        <fnt>
          <bib>MT</bib>
          <lok>&Rea; 28:50</lok>
        </fnt>;
      </ekz>
      <ekz>
        fieraj okuloj kaj <tld/>a koro
        <fnt>
          <bib>MT</bib>
          <lok>&Sen; 21:4</lok>
        </fnt>;
      </ekz>
      <ekz>
        admonu tiujn, kiuj estas ri&ccirc;aj en la nuna mondo, ke ili ne estu <tld/>aj, kaj ke
        ili apogu sian esperon ne sur la malcertecon de la ri&ccirc;o
        <fnt>
          <bib>NT</bib>
          <lok>&Ti1; 6:17</lok>
        </fnt>;
      </ekz>
      <ekz>
        muti&gcirc;u la mensogaj bu&scirc;oj, kiuj parolas <tld/>e kontra&ubreve; piulo, kun fiero kaj
        malestimo
        <fnt>
          <bib>MT</bib>
          <lok>&Psa; 31:18</lok>
        </fnt>;
      </ekz>
      <ekz>
        vi la nazon portas tro super la nivelo, <klr>[&#8230;]</klr> vi aspektas kvaza&ubreve; vi
        celus tuj dekro&ccirc;i per <tld/>a movo la stelojn de l' &ccirc;ielo
        <fnt>
          <aut>Raymond Schwartz</aut>
          <vrk><url ref="&Steloj;butiko">La Stranga Butiko</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="modest.mal0a.PSI">malmodesta</ref>,
      <ref cel="fid.tromem0a">tromemfida</ref>
    </refgrp>
    <refgrp tip="vid">
      <ref cel="aplomb.0a">aplomba</ref>,
      <ref cel="alt">alte</ref>,
      <ref cel="kracx.0i">kra&ccirc;i</ref>,
      <ref cel="preten.0i">pretendi</ref>
    </refgrp>
    <trdgrp lng="fr">
      <trd>arrogant</trd>,
      <trd>impudent</trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>arrog&aacute;ns</trd>,
      <trd>pimasz</trd>
    </trdgrp>
    <trdgrp lng="zh">
    <trd>&#x50B2;&#24930; <pr>&#xE0;om&#xE0;n</pr></trd>,
    <trd>&#x4E0D;&#x53EF;&#x4E00;&#x4E16;&#30340; <pr>b&#xF9;k&#x11B;y&#x12B;sh&#xEC;de</pr></trd>,
    <trd>&#x505A;&#22823; <pr>zu&#xF2;d&#xE0;</pr></trd>
  </trdgrp>
</snc>
<!-- tio aperu konsekvence kiel arog/ant/a sub arog/i:
  <snc mrk="arogan.0a.2">
    <dif>
      Kiu arogas al si.
    </dif>

    <trdgrp lng="hu">
      <trd>arrog&aacute;ns</trd>,
      <trd>k&ouml;vetelz&odblac;d&odblac;</trd>
    </trdgrp>
  </snc>
-->

  <rim>
    Distingu de <ref tip="hom" cel="arog.0i">arog</ref>&middot;ant&middot;a.
  </rim>
  <trdgrp lng="be">
    <trd>&c_n;&c_a;&c_h;&c_a;&c_b;&c_n;&c_y;</trd>,
    <trd>&c_d;&c_z;&c_jo;&c_r;&c_z;&c_k;&c_ib;</trd>
  </trdgrp>
  <trd lng="bo">&t_ha;&t_ma;&t_tsheg;&t_pa;&t_tsheg;&t_tsha;&t_tsheg;&t_pa;&t_naro;&t_tsheg;</trd>
  <trd lng="cs">zpupn&yacute;</trd>
  <trdgrp lng="de">
    <trd>&uuml;berheblich</trd>,
    <trd>eingebildet</trd>,
    <trd>arrogant</trd>
  </trdgrp>
  <trd lng="en">arrogant</trd>
  <trd lng="es">arrogante</trd>
  <trd lng="he">&yod;&#x5B8;&he;&#x5B4;&yod;&resh;</trd>
  <trdgrp lng="id">
    <trd>arogan</trd>,
    <trd>sombong</trd>
  </trdgrp>
  <trd lng="it">arrogante</trd>
  <trdgrp lng="ja">
    <trd>&#x6A2A;&#x67C4;&#x306A;  <pr>&#x304A;&#12358;&#12408;&#12356;&#x306A;</pr></trd>,
    <trd>&#x5C0A;&#22823;&#x306A;  <pr>&#x305D;&#12435;&#12384;&#12356;&#x306A;</pr></trd>,
    <trd>&#x601D;&#12356;&#x4E0A;&#x304C;&#12387;&#x305F;  <pr>&#x304A;&#12418;&#12356;&#12354;&#x304C;&#12387;&#x305F;</pr></trd>
  </trdgrp>
  <trd lng="pt">arrogante</trd>
  <trdgrp lng="ru">
    <trd>&c_d;&c_je;&c_r;&c_z;&c_k;&c_i;&c_j;</trd>,
    <trd>&c_n;&c_a;&c_g;&c_l;&c_y;&c_j;</trd>,
    <trd>&c_n;&c_a;&c_h;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>arogantn&yacute;</trd>,
    <trd>bezo&ccaron;iv&yacute;</trd>,
    <trd>drz&yacute;</trd>,
    <trd>spurn&yacute;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_z;&c_u;&c_h;&c_v;&c_a;&#x43B;&c_i;&c_j;</trd>,
    <trd>&#x43D;&c_a;&c_h;&c_a;&c_b;&#x43D;&c_i;&c_j;</trd>,
    <trd>&c_h;&c_a;&#x43C;&c_u;&c_v;&c_a;&c_t;&c_i;&c_j;</trd>,
    <trd>&c_h;&c_a;&#x43C;&c_s;&#x44C;&#x43A;&c_i;&c_j;&#xA0;(&#x43F;&c_r;&#x43E; &c_v;&c_ch;&c_i;&#x43D;&#x43E;&#x43A;)</trd>
  </trdgrp>
</drv>

<drv mrk="arogan.0o">
  <kap><tld/>o, <var><kap><tld/>eco</kap></var></kap>
  <snc mrk="arogan.0o.PSI">
    <dif>
      <tld lit="A"/>a spirito, sinteno:
      <ekz>
        mi konas vian <tld/>econ kaj vian malbonan koron
        <fnt>
          <bib>MT</bib>
          <lok>&Sa1; 17:28</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_n;&c_a;&c_h;&c_a;&c_b;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
  <trd lng="fr">arrogance</trd>
</drv>

<drv mrk="arogan.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc mrk="arogan.0ajxo.PSI">
    <dif>
      <tld lit="A"/>a ago:
      <ekz>
        ili estas malhumilaj, parolas <tld/>a&jcirc;on
        <fnt>
          <bib>MT</bib>
          <lok>&Psa; 94:4</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_n;&c_a;&c_h;&c_a;&c_b;&c_s;&c_t;&c_v;&c_a;</trd>
  <trdgrp lng="fr">
    <trd>arrogance<klr> (acte)</klr></trd>,
    <trd>hardiesse</trd>
  </trdgrp>
</drv>

<drv mrk="arogan.0ulo">
  <kap><tld/>ulo</kap>
  <snc mrk="arogan.0ulo.PSI">
    <dif>
      <tld lit="A"/>a persono, sin tenanta malrespekte pro tromemfido:
      <ekz>
        ni devas puni la <tld/>ulojn
        <fnt>
          <aut>B. von Suttner, trad. A. Caumont kaj F. Luin</aut>
          <vrk>For la batalilojn!</vrk>
          <lok>1914, 2001</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_n;&c_a;&c_h;&c_a;&c_b;&c_n;&c_ib;&c_k;</trd>,
    <trd>&c_n;&c_a;&c_h;&c_a;&c_b;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>arrogant<klr> (subst.)</klr></trd>,
    <trd>pr&eacute;tentieux<klr> (subst.)</klr></trd>
  </trdgrp>
</drv>
</art>
