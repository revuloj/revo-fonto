<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc> <ofc>1</ofc>
  <rad>tragedi</rad>/o
  <fnt><bib>F</bib>, <lok>Grammaire, 15.</lok></fnt>
</kap>
<drv mrk="traged.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <uzo tip="fak">TEA</uzo>
    <dif>
      Teatra klasika verko mal&gcirc;oje fini&gcirc;anta kaj prezentanta
      altrangajn homojn, kies malfeli&ccirc;oj vekas en ni kompaton:
      <ekz>
        la <tld/>oj de Sofoklo.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="dram.0o">dramo</ref>,
      <ref cel="komedi.0o">komedio</ref>,
      <ref cel="tragik1.0o">tragikomedio</ref>.
    </refgrp>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Terure malfeli&ccirc;a okaza&jcirc;o:
      <ekz>
        familia <tld/>o;
      </ekz>
      <ekz>
        la terura <tld/>o de la mondmilito.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Trag&ouml;die</trd>
  <trd lng="nl">tragedie</trd>
  <trd lng="ru">&c_t;&c_r;&c_a;&c_g;&c_je;&c_d;&c_i;&c_ja;</trd>
</drv>

<drv mrk="traged.0a">
  <kap><tld/>a</kap>
  <snc mrk="traged.0a.TEA">
    <uzo tip="fak">TEA</uzo>
    <dif>
      Rilata al <tld/>o:
      <ekz>
        <tld/>a a&ubreve;toro.
      </ekz>
    </dif>
    <trd lng="ru">&c_t;&c_r;&c_a;&c_g;&c_je;&c_d;&c_i;&c_j;&c_n;&c_y;&c_j;</trd>
  </snc>
  <snc mrk="traged.0a.io">
    <uzo tip="klr">(f. io)</uzo>
    <dif>
      Terure malfeli&ccirc;a:
      <ekz>
        <tld/>a morto;
      </ekz>
      <ekz>
        vere <tld/>aj estis la lastaj momentoj de Z.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>tragisch</trd>,
      <trd>unheilvoll</trd>,
      <trd>unseelig</trd>,
      <trd>ersch&uuml;tternd</trd>
    </trdgrp>
    <trd lng="ru">&c_t;&c_r;&c_a;&c_g;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  </snc>
  <trd lng="nl">tragisch</trd>
</drv>
</art>
