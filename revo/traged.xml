<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc> <ofc>1</ofc> <ofc>7</ofc>
  <rad>tragedi</rad>/o
  <fnt><bib>F</bib>, <lok>Grammaire, 15.</lok></fnt>
</kap>
<drv mrk="traged.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="traged.0o.TEA">
    <uzo tip="fak">TEA</uzo>
    <dif>
      <ref tip="super" cel="teatr.0ajxo">Teatra&jcirc;o</ref>,
      kun mal&gcirc;oja fino, prezentanta altrangajn homojn,
      kies malfeli&ccirc;oj vekas kompaton en spektantoj:
      <ekz>
        la <tld/>oj de Sofoklo;
      </ekz>
      <ekz>
        post la verkado de <ctl>La <tld/>o de kokino</ctl> la a&ubreve;toro
        reiris al Rusio, kiu &scirc;an&gcirc;i&gcirc;is al Sovetio dum lia restado en
        fremdaj landoj<fnt><aut>Spomenka &Scirc;timec</aut>: <vrk>El la
        japana
        tra la &ccirc;ina (V. Ero&scirc;enko, Cikatro de amo)</vrk>,
        <bib>Monato</bib><lok>jaro 1997a, numero 3a, p. 21a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="traged.0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Terure malfeli&ccirc;a okaza&jcirc;o:
      <ekz>
        jen la vera ka&ubreve;zo de hodia&ubreve;a milito sanguma kaj de ekstrema
        tragedio de la albanoj de Kosovo<fnt><aut>Bardhyl Mezini</aut>:
        <vrk>La vera ka&ubreve;zo de la milito</vrk>,
        <bib>Monato</bib><lok>jaro
        1999a, numero 5a, p. 12a</lok></fnt>.
      </ekz>
      <ekz>
        la terura <tld/>o de la mondmilito.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_t;&c_r;&c_a;&c_g;&c_je;&c_d;&c_y;&c_ja;</trd>
  <trd lng="ca">trag&egrave;dia</trd>
  <trd lng="de">Trag&ouml;die</trd>
  <trd lng="en">tragedy</trd>
  <trdgrp lng="fr">
    <trd>trag&eacute;die</trd>
  </trdgrp>
  <trd lng="hu">trag&eacute;dia</trd>  
  <trd lng="nl">tragedie</trd>
  <trd lng="pt">trag&eacute;dia</trd>
  <trd lng="ru">&c_t;&c_r;&c_a;&c_g;&c_je;&c_d;&c_i;&c_ja;</trd>
  <trd lng="sk">trag&eacute;dia</trd>
</drv>

<drv mrk="traged.0a">
  <kap><tld/>a</kap>
  <snc mrk="traged.0a.TEA">
    <dif>
      Rilata al <tld/>o:
      <ekz>
        <tld/>a a&ubreve;toro.
      </ekz>
    </dif>
    <trd lng="be">&c_t;&c_r;&c_a;&c_g;&c_je;&c_d;&c_y;&c_j;&c_n;&c_y;</trd>
    <trd lng="hu">trag&eacute;dia-</trd>    
    <trd lng="ru">&c_t;&c_r;&c_a;&c_g;&c_je;&c_d;&c_i;&c_j;&c_n;&c_y;&c_j;</trd>
  </snc>
  <snc mrk="traged.0a.FIG">
    <dif>
      Terure malfeli&ccirc;a:
      <ekz>
        <tld/>a morto;
      </ekz>
      <ekz>
        vere <tld/>aj estis la lastaj momentoj de Z.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="tragik.0a">tragika</ref>
    </refgrp>
    <trd lng="be">&c_t;&c_r;&c_a;&c_g;&c_ib;&c_ch;&c_n;&c_y;</trd>
    <trdgrp lng="de">
      <trd>tragisch</trd>,
      <trd>unheilvoll</trd>,
      <trd>unselig</trd>,
      <trd>ersch&uuml;tternd</trd>
    </trdgrp>
    <trd lng="hu">tragikus</trd>    
    <trd lng="ru">&c_t;&c_r;&c_a;&c_g;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  </snc>
  <trd lng="ca">tr&agrave;gic</trd>
  <trd lng="en">tragic</trd>
  <trdgrp lng="fr">
    <trd>tragique</trd>
  </trdgrp>
  <trd lng="nl">tragisch</trd>
  <trd lng="pt">tr&aacute;gico</trd>
</drv>
</art>
