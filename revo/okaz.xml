<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>okaz</rad>/i
</kap>
<drv mrk="okaz.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Esti&gcirc;i, fari&gcirc;i en iu loko a&ubreve; momento:
      <ekz>
        la edzi&gcirc;o <tld/>is anta&ubreve; tri tagoj;
      </ekz>
      <ekz>
        la infano rakontis naive &ccirc;ion, kio <tld/>is al
        &scirc;i<fnt>Z</fnt>;
      </ekz>
      <ekz>
        se <tld/>os, ke li mortos...;
      </ekz>
      <ekz>
        povus <tld/>i, ke iu rekonus mian skribon.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="fal.0i">fali</ref>,
      <ref cel="far.0i">fari</ref>,
      <ref cel="ven.0i">veni</ref>,
      <ref cel="aper.0i">aperi</ref>,
      <ref cel="lok.0o">loko</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="cs">
    <trd>st&aacute;t se</trd>,
    <trd>p&rcaron;ihodit se</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>passieren</trd>,
    <trd>geschehen</trd>,
    <trd><klr>sich </klr>ereignen</trd>,
    <trd><klr>sich </klr>begeben</trd>,
    <trd>stattfinden</trd>
  </trdgrp>
  <trd lng="en">happen</trd>
  <trdgrp lng="fr">
    <trd>arriver<klr tip="ind"> (survenir)</klr></trd>,
    <trd>se <ind>passer</ind><klr tip="ind"> (survenir)</klr></trd>,
    <trd>survenir</trd>,
    <trd>se <ind>tenir</ind><klr tip="ind"> (se passer)</klr></trd></trdgrp> 
  <trdgrp lng="nl">
    <trd>plaatshebben</trd>,
    <trd>gebeuren</trd>,
    <trd>plaatsgrijpen</trd>
  </trdgrp>
  <trd lng="pt">acontecer</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_l;&c_u;&c_ch;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_i;&c_z;&c_o;&c_j;&c_t;&c_i;</trd>
  </trdgrp>
</drv>

<drv mrk="okaz.0o">
  <kap><tld/>o</kap>
  <snc mrk="okaz.0o.travivajxo">
    <dif>
      Tio, kio <tld/>as:
      <ekz>
        stranga <tld/>o trafis min<fnt>Z</fnt>;
      </ekz>
      <ekz>
        vi tremas pro <tld/>o la terura<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la <tld/>o konfirmis la suspekton;
      </ekz>
      <ekz>
        la interligo de la <tld/>oj.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="viv">traviva&jcirc;o</ref>,
      <ref cel="spert.0ajxo">sperta&jcirc;o</ref>,
      <ref cel="far.0igxo">fari&gcirc;o</ref>,
      <ref cel="akcide.0o">akcidento</ref>,
      <ref cel="incide.0o">incidento</ref>,
      <ref cel="epizod.0o">epizodo</ref>.
    </refgrp>
    <trd lng="pt">acontecimento</trd>
  </snc>
  <snc mrk="okaz.0o.kazo">
    <dif>
      Difinita aparta cirkonstanco;
      <ref tip="sin" cel="kaz.0o.okazo">kazo <sncref ref="kaz.0o.okazo"/></ref>:
      <ekz>
        en tiaj <tld/>oj ni uzas la fina&jcirc;on n<fnt>Z</fnt>;
      </ekz>
      <ekz>
        tio estis bela <tld/>o de hemiplegio<fnt>B</fnt>;
      </ekz>
      <ekz>
        en plej bona <tld/>o ni povos alveni nur post noktomezo;
      </ekz>
      <ekz>
        en <tld/>o de bezono;
      </ekz>
      <ekz>
        en la <tld/>o, se vi bezonos vortaron, vi trovos &gcirc;in sur la
        breto;
      </ekz>
      <ekz>
        forlasi iun sufikson ni povas nur en tiaj <tld/>oj, se la neceseco
        de la sufikso estas iom duba<fnt>Z</fnt>
      </ekz>
    </dif>
    <trdgrp lng="pt">
      <trd>caso</trd>,
      <trd>circunst&acirc;nscias</trd>
    </trdgrp>
  </snc>
  <snc mrk="okaz.0o.bonsxanco">
    <dif>
      Feli&ccirc;a, favora cirkonstanco:
      <ekz>
        uzi<fnt>Z</fnt>,
      </ekz>
      <ekz>
        kapti<fnt>Z</fnt>,
      </ekz>
      <ekz>
        profiti la <tld/>on;
      </ekz>
      <ekz>
        kiu <tld/>on for&scirc;ovas, &gcirc;in jam ne retrovas
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        <tld/>on kaptu &ccirc;e l' kapo, &ccirc;ar la vosto estas glita
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        fordormi la <tld/>on
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        li atendas, ke la <tld/>o venu al lia nazo
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <trd lng="pt">ocasi&atilde;o</trd>
  </snc>
  <snc mrk="okaz.0o.instigo">
    <dif>
      Cirkonstanco, kiu instigas fari ion:
      <ekz>
        <tld/>o kreas &scirc;teliston
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        tio donis al mi la <tld/>on turni la atenton de niaj
        amikoj sur tiun malfacila&jcirc;on<fnt>Z</fnt>;
      </ekz>
      <ekz>
        lia morto estis la <tld/>o de la revolucio;
      </ekz>
      <ekz>
        mi jam havis la <tld/>on vidi, ke<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="pt">ocasi&atilde;o</trd>
  </snc>
  <snc mrk="okaz.0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>EKV</bib><lok>&para;306</lok></fnt>
    <dif>
      <klr>(kadre de iu <ref cel="spac.probablo0o">probablospaco</ref>
      <frm>(<g>&Omega;</g>,<g>A</g>,P)</frm>)</klr>
      &Ccirc;iu el la elementoj de <frm><g>A</g></frm>:
      <ekz>
        <ind>neebla <tld/>o</ind> <klr>(la malplena aro)</klr>;
        <trd lng="de">unm&ouml;gliches <ind>Ereignis</ind></trd>
        <trd lng="en">impossible <ind>event</ind></trd>
        <trd lng="fr">&eacute;v&eacute;nement impossible</trd>
        <trd lng="pl">zdarzenie niemo&zdot;liwe</trd>
        <trd lng="ru">&c_n;&c_je;&c_v;&c_o;&c_z;&c_m;&c_o;&c_zh;&c_n;&c_o;&c_je; <ind>&c_s;&c_o;&c_b;&c_y;&c_t;&c_i;&c_je;</ind></trd>
      </ekz>
      <ekz>
        <ind>certa <tld/>o</ind> <klr>(la aro <frm><g>&Omega;</g></frm>)</klr>;
        <trd lng="de">sicheres <ind>Ereignis</ind></trd>
        <trd lng="en">certain <ind>event</ind></trd>
        <trd lng="fr">&eacute;v&eacute;nement certain</trd>
        <trd lng="pl">zdarzenie pewne</trd>
        <trd lng="ru">&c_d;&c_o;&c_s;&c_t;&c_o;&c_v;&c_je;&c_r;&c_n;&c_o;&c_je;
        <ind>&c_s;&c_o;&c_b;&c_y;&c_t;&c_i;&c_je;</ind></trd>
      </ekz>
      <ekz>
        <ind>mala <tld/>o</ind> <fnt><bib>MatVort</bib></fnt>
        <klr>(<ref cel="komple1.0a.subaro">komplementa</ref>)</klr>.
        <trdgrp lng="de">
          <trd>Gegenereignis</trd>,
          <trd>komplement&auml;res <ind>Ereignis</ind></trd></trdgrp> 
        <trd lng="en">complementary <ind>event</ind></trd>
        <trd lng="fr">&eacute;v&eacute;nement contraire</trd>
        <trd lng="pl">zdarzenie przeciwne</trd>
        <trd lng="ru">&c_d;&c_o;&c_p;&c_o;&c_l;&c_n;&c_i;&c_t;&c_je;&c_l;&c_n;&c_o;&c_je; <ind>&c_s;&c_o;&c_b;&c_y;&c_t;&c_i;&c_je;</ind></trd>
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="pend.nede0a.okazoj">nedependa</ref>.
    </refgrp>
    <rim>
      Jam ekzistas <ctl><tld/>o</ctl> kaj <ctl><tld/>aro</ctl> en
      <fnt><bib>MatTerm</bib><lok>p. 28</lok></fnt>, sed por determini iliajn
      sencojn necesus pli bone koni la terminologion de la tiama
      probablokalkulo.
    </rim>
    <trd lng="de">Ereignis</trd>
    <trd lng="en">event</trd>
    <trd lng="fr">&eacute;v&eacute;nement</trd>
    <trd lng="pl">zdarzenie losowe</trd>
    <trd lng="ru">&c_s;&c_o;&c_b;&c_y;&c_t;&c_i;&c_je;</trd>
  </snc>
  <trdgrp lng="cs">
    <trd>p&rcaron;&iacute;pad</trd>,
    <trd>p&rcaron;&iacute;le&zcaron;itost</trd>,
    <trd>n&aacute;h</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Ereignis</trd>,
    <trd>Geschehnis</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>aventure<klr tip="ind"> (ce qui arrive)</klr></trd>,
    <trd>cas</trd>,
    <trd>&eacute;v&eacute;nement</trd>,
    <trd>occasion</trd>,
    <trd>occurrence</trd></trdgrp> 
  <trdgrp lng="nl">
    <trd>geval</trd>,
    <trd>gebeurtenis</trd>,
    <trd>gelegenheid</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_l;&c_u;&c_ch;&c_a;&c_j;</trd>
</drv>

<drv mrk="okaz.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Hazarde renkontata a&ubreve; <tld/>anta:
      <ekz>
        <tld/>a komplimento ne iras al testamento
        <klr>(ne indas hereda&jcirc;on)</klr>
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        tio dependas de pure <tld/>aj cirkonstancoj<fnt>Z</fnt>;
      </ekz>
      <ekz>
        kvankam li silentas, tamen <tld/>aj vortoj al mi
        montris, ke...<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>accidentel<klr tip="ind"> (occasionnel)</klr></trd>,
    <trd>occasionnel</trd>,
    <trd>sporadique</trd></trdgrp> 
  <trdgrp lng="nl">
    <trd>toevallig</trd>,
    <trd>incidenteel</trd>
  </trdgrp>
  <trd lng="pt">ocasional</trd>
  <trd lng="ru">&c_s;&c_l;&c_u;&c_ch;&c_a;&c_j;&c_n;&c_y;&c_j;</trd>
</drv>

<drv mrk="okaz.0e">
  <kap><tld/>e</kap>
  <snc>
    <dif>
      En tia <tld/>o, &ccirc;e la <tld/>o:
      <ekz>
        <ind><tld/>e de</ind> tio, mi deklaros, ke...;
        <trd lng="fr">&agrave; l'occasion de</trd>
        <trd lng="ru">&c_v; &c_s;&c_l;&c_u;&c_ch;&c_a;&c_je;
        <klr>(&c_p;&c_r;&c_je;&c_d;&c_l;&c_o;&c_g;)</klr></trd>
      </ekz>
      <ekz>
        mi <tld/>e uzos vian afablan permeson.
      </ekz>
    </dif>
    <trdgrp lng="ru">
      <trd>&c_v; &c_e;&c_t;&c_o;&c_m; &c_s;&c_l;&c_u;&c_ch;&c_a;&c_je;</trd>,
      <trd>&c_v; &c_t;&c_a;&c_k;&c_o;&c_m;
      &c_s;&c_l;&c_u;&c_ch;&c_a;&c_je;</trd>
    </trdgrp>
  </snc>
  <snc>
    <dif>
      Pro la <tld/>o:
      <ekz>
        oni iluminaciis <tld/>e de la nacia festo.
      </ekz>
    </dif>
    <trd lng="de">anl&auml;sslich</trd>
    <trd lng="ru">&c_p;&c_o; &c_s;&c_l;&c_u;&c_ch;&c_a;&c_ju;</trd>
  </snc>
  <snc>
    <dif>
      Hazarde:
      <ekz>
        <tld/>e mi iris sur la strato<fnt>B</fnt>;
      </ekz>
      <ekz>
        la naturaj lingvoj konstrui&gcirc;is <tld/>e kaj
        senkonscie<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="de">zuf&auml;llig</trd>
    <trd lng="ru">&c_s;&c_l;&c_u;&c_ch;&c_a;&c_j;&c_n;&c_o;</trd>
  </snc>
  <trdgrp lng="fr">
    <trd>occasionnellement</trd>,
    <trd>&agrave; l'<ind>occasion</ind></trd></trdgrp> 
  <trdgrp lng="nl">
    <trd>toevallig</trd>,
    <trd>bij <ind>gelegenheid</ind> van</trd>,
    <trd>tijdens</trd>
  </trdgrp>
</drv>

<drv mrk="okaz.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc>
    <dif>
      Hazarda <tld/>o:
      <ekz>
        tiu regulo ne estas ia mistera&jcirc;o, kaj estas simpla
        <tld/>a&jcirc;o<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Ereignis</trd>
  <trd lng="fr">&eacute;v&eacute;nement</trd>
  <trdgrp lng="nl">
    <trd>gebeurtenis</trd>,
    <trd>toevalligheid</trd>
  </trdgrp>
  <trd
  lng="ru">&c_s;&c_l;&c_u;&c_ch;&c_a;&c_j;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>
</drv>

<drv mrk="okaz.0ebla">
  <kap><tld/>ebla</kap>
  <snc>
    <fnt><bib>PV</bib></fnt>
    <uzo tip="stl">EVI</uzo>
    <ref tip="dif" cel="eventu.0a">eventuala.</ref>
  </snc>
  <adm>
    &Ccirc;ar ~i estas netransitiva, tiu formo aspektas tute malbona.
    <aut>MB</aut>
  </adm>
</drv>

<drv mrk="okaz.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <dif>
      Igi <tld/>i:
      <ekz>
        la societo <tld/>igis kongreson en la pasinta monato;
      </ekz>
      <ekz>
        tiu katastrofo <tld/>igis la morton de tridek pasa&gcirc;eroj.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>veranlassen</trd>,
    <trd>verursachen</trd>,
    <trd>herbeif&uuml;hren</trd>,
    <trd>stattfinden lassen</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>causer<klr tip="ind"> (occasionner)</klr></trd>,
    <trd>donner lieu (&agrave;)</trd>,
    <trd>occasionner</trd>,
    <trd>organiser</trd></trdgrp> 
  <trdgrp lng="nl">
    <trd>doen <ind>plaatshebben</ind></trd>,
    <trd>teweeg brengen</trd>,
    <trd>doen <ind>plaatsgrijpen</ind></trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_p;&c_r;&c_o;&c_i;&c_z;&c_v;&c_je;&c_s;&c_t;&c_i;</trd>,
    <trd>&c_o;&c_r;&c_g;&c_a;&c_n;&c_i;&c_z;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_u;&c_s;&c_t;&c_r;&c_o;&c_i;&c_t;&c_mol;</trd>,
    <trd>&c_v;&c_y;&c_z;&c_v;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="okaz.inter0ajxoflank0ajxo">
  <kap>inter<tld/>a&jcirc;o, flank<tld/>a&jcirc;o</kap>
  <snc>
    <dif>
      Aparta malgrava <tld/>o, plejofte malhelpa, kiu neatendite
      intervenas en cirkonstancaro.
    </dif>
    <refgrp tip="vid">
      <ref cel="ven">intervena&jcirc;o</ref>,
      <ref cel="incide.0o">incidento</ref>.
    </refgrp>
  </snc>
</drv>

<drv mrk="okaz.kun0eco">
  <kap>kun<tld/>eco</kap>
  <snc>
    <ref tip="dif" cel="koinci.0o">koincido.</ref>
  </snc>
  <trd lng="fr">co&iuml;ncidence</trd>
</drv>

<drv mrk="okaz.elementa0o">
  <kap>elementa <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      Unuelementa <ref cel="okaz.0o.MAT"><tld/>o <sncref/></ref>:
      <ekz>
        la <ref cel="probab.0o.de_okazo">probablo</ref> de <tld/>o 
        egalas al la sumo de la probabloj de la elementaj <tld/>oj 
        &gcirc;in konsistigantaj.
      </ekz>
    </dif>
    <rim>
      Oni foje nomas <ctl>elementa <tld/>o</ctl> la elementon mem.
    </rim>
  </snc>
  <trdgrp lng="de">
    <trd>Elementarereignis</trd>,
    <trd>elementares <ind>Ereignis</ind></trd>
  </trdgrp>
  <trd lng="en">simple <ind>event</ind></trd>
  <trd lng="fr">&eacute;v&eacute;nement &eacute;l&eacute;mentaire</trd>
  <trd lng="pl">zdarzenie elementarne</trd>
  <trd lng="ru">&c_e;&c_l;&c_je;&c_m;&c_je;&c_n;&c_t;&c_a;&c_r;&c_n;&c_o;&c_je; <ind>&c_s;&c_o;&c_b;&c_y;&c_t;&c_i;&c_je;</ind></trd>
</drv>
</art>
