<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>oper</rad>/o
</kap>
<drv mrk="oper.0o">
  <kap><tld/>o</kap>
  <snc>
    <uzo tip="fak">MUZ</uzo>
    <dif>
      Muzika teatra&jcirc;o, en kiu roluloj kantas sole, dialoge a&ubreve; &hcirc;ore
      akompanate per orkestro, kelkfoje kun dancoj:
      <ekz>
        la <tld/>oj de Wagner;
      </ekz>
      <ekz>
        <tld/>a trupo.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Oper</trd>
  <trd lng="el">&omikron_ton;&pi;&epsilon;&rho;&alfa;</trd>
  <trd lng="en">opera</trd>
  <trdgrp lng="fr">
    <trd>op&eacute;ra</trd>
  </trdgrp>
  <trd lng="hu">opera</trd>
  <trd lng="nl">opera</trd>
  <trd lng="pt">&oacute;pera</trd>
  <trd lng="ru">&c_o;&c_p;&c_je;&c_r;&c_a;</trd>
  <trd lng="sv">opera</trd>
</drv>

<drv mrk="oper.0ejo">
  <kap><tld/>ejo</kap>
  <snc>
    <uzo tip="fak">MUZ</uzo>
    <dif>
      <tld lit="O"/>teatro.
    </dif>
  </snc>
  <trdgrp lng="de">
     <trd>Oper</trd>,
     <trd>Opernhaus</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>op&eacute;ra<klr> (b&acirc;timent)</klr></trd>
  </trdgrp>
  <trd lng="hu">operah&aacute;z</trd>
  <trdgrp lng="ru">
    <trd>&c_o;&c_p;&c_je;&c_r;&c_a; <klr
    tip="amb">(&c_t;&c_je;&c_a;&c_t;&c_r;)</klr></trd>,
    <trd>&c_o;&c_p;&c_je;&c_r;&c_n;&c_y;&c_j;
    &c_t;&c_je;&c_a;&c_t;&c_r;</trd>
  </trdgrp>
  <trd lng="nl">operagebouw</trd>
  <trd lng="pt">&oacute;pera</trd>
</drv>

<drv mrk="oper.0eto">
  <kap><tld/>eto</kap>
  <snc>
    <uzo tip="fak">MUZ</uzo>
    <dif>
      Mallonga <tld/>o ofte kun facila a&ubreve; komika temo.
    </dif>
  </snc>
  <trd lng="de">Operette</trd>
  <trd lng="el">&omikron;&pi;&epsilon;&rho;&epsilon_ton;&tau;&tau;&alfa;</trd>
  <trdgrp lng="fr">
    <trd>op&eacute;ra bouffe</trd>,
    <trd>op&eacute;rette</trd>
  </trdgrp>
  <trd lng="hu">operett</trd>
  <trd lng="nl">operette</trd>
  <trd lng="pt">opereta</trd>
  <trd lng="ru">&c_o;&c_p;&c_je;&c_r;&c_je;&c_t;&c_t;&c_a;</trd>
</drv>

<drv mrk="oper.duon0o">
  <kap>duon<tld/>o</kap>
  <snc>
    <uzo tip="fak">MUZ</uzo>
    <dif>
      <tld lit="O"/>o enhavanta nekantatajn dialogojn.
    </dif>
    <refgrp tip="sin">
      <ref cel="oper.miks0o">miks<tld/>o</ref>
    </refgrp>
  </snc>
  <trdgrp lng="fr">
    <trd>op&eacute;ra comique</trd>
  </trdgrp>
  <trd lng="nl">opera comique</trd>
  <trdgrp lng="ru">
    <trd>&c_m;&c_ju;&c_z;&c_i;&c_k;&c_l;</trd>,
    <trd>&c_o;&c_p;&c_je;&c_r;&c_je;&c_t;&c_t;&c_a;</trd>
  </trdgrp>
</drv>

<drv mrk="oper.miks0o">
  <kap>miks<tld/>o</kap>
  <snc>
    <uzo tip="fak">MUZ</uzo>
    <ref tip="dif" cel="oper.duon0o">duon<tld/>o</ref>
  </snc>
  <trd lng="nl">opera comique</trd>
  <trdgrp lng="ru">
    <trd>&c_m;&c_ju;&c_z;&c_i;&c_k;&c_l;</trd>,
    <trd>&c_o;&c_p;&c_je;&c_r;&c_je;&c_t;&c_t;&c_a;</trd>
  </trdgrp>
</drv>
</art>
