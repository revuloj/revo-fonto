<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>lagop</rad>/o
  <fnt><bib>PIV1</bib></fnt>
</kap>

<drv mrk="lagop.0o">
  <kap>
    <tld/>o
  </kap>

  <snc mrk="lagop.0o.genro">
    <uzo tip="fak">ZOO</uzo>
    <dif>
      <ref tip="lst" cel="genr.0o.BIO"
      lst="voko:zoologiaj_genroj">Genro</ref> el familio 
      <ref tip="malprt" cel="fazane.0oj">fazanedoj</ref>,
      subfamilio <ref tip="malprt" cel="tetraon1.0oj">tetraonedoj</ref>
      (<trd lng="la">Lagopus</trd>),
      koke grandaj birdoj vivantaj tre norde en Ameriko kaj
      E&ubreve;razio, aliloke en altaj montaroj, ofte &ccirc;asataj:
      <ekz>
        ermenoj, leporoj kaj <tld/>oj <klr>...</klr> &scirc;an&gcirc;as
        siajn kolorojn por adapti&gcirc;i al la la&ubreve;sezone
        &scirc;an&gcirc;i&gcirc;anta medio
        <fnt>
          <aut>Saliko</aut>,
          <vrk>
            <url ref="http://www.esperanto.be/fel/2005/008395.php">
              Vizito al la nacia parko Vanoise</url>
          </vrk>,
          <bib>Monato</bib>,
          <lok>jaro 2005a, numero 2a, p. 22a</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="de">Schneehuhn</trd>
    <trd lng="fr">lagop&egrave;de</trd>
    <trd lng="en">grouse</trd>
    <trd lng="hu">h&oacute;fajd</trd>
    <trd lng="it"><ind>pernice</ind> bianca</trd>
    <trd lng="nl">sneeuwhoen</trd> 
    <trd lng="pl">pardwa</trd>
    <trd lng="sv">ripa</trd>
  </snc>

  <snc mrk="lagop.0o.specio">
    <uzo tip="fak">ZOO</uzo>
    <fnt>
       <aut>Wouter F. Pilger</aut>,
       <vrk>
         <url ref="http://www.xs4all.nl/~pilger/wfp/birdeou8.htm">
           Komunlingvaj nomoj de E&ubreve;ropaj birdoj</url>
       </vrk>
    </fnt>
    <dif>
      Specio de <ref tip="super" cel="lagop.0o">lagopo</ref> (<trd
      lng="la">Lagopus lagopus</trd>):
      <ekz>
        vivas en la erikejo <tld/>aro, la <tld/>a societo estas vera
        spegulo de la homa societo, 
        vivas inter la pikemaj arbustoj <tld/>oj junaj, <tld/>oj
        plenkreskaj, 
        <tld/>oj kaduki&gcirc;antaj suferantaj preska&ubreve; pro senila demenco
        <fnt>
          <bib>Monato</bib>
          <aut>Angela Tellier</aut>
          <vrk><url
          ref="http://www.esperanto.be/fel/2004/008306.html">La&ubreve;proverbaj
          fabeloj</url></vrk>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="de">Moorschneehuhn</trd>
    <trd lng="la">Lagopus lagopus</trd>
    <trdgrp lng="en">
      <trd>willow <ind>ptarmigan</ind></trd>,
      <trd>willow <ind>grouse</ind></trd>
    </trdgrp>
    <trd lng="it"><ind>pernice</ind> bianca nordica</trd>
    <trd lng="la">Lagopus lagopus</trd>
    <trd lng="pl">pardwa mszarna</trd>
    <trd lng="sv">dalripa</trd>
  </snc>
</drv>

<drv mrk="lagop.monta0o">
  <kap>monta <tld/>o</kap>
  <snc>
    <uzo tip="fak">ZOO</uzo>
    <fnt>
       <aut>Wouter F. Pilger</aut>,
       <vrk>
         <url ref="http://www.xs4all.nl/~pilger/wfp/birdeou8.htm">
           Komunlingvaj nomoj de E&ubreve;ropaj birdoj</url>
       </vrk>
    </fnt>
    <dif>
      Specio de <ref tip="super" cel="lagop.0o">lagopo</ref>
      (<trd lng="la">Lagopus muta</trd>).
    </dif>
    <trd lng="en">rock <ind>ptarmigan</ind></trd>
    <trd lng="it"><ind>pernice</ind> bianca comune</trd>
    <trd lng="la">Lagopus mutus</trd>
    <trd lng="pl">pardwa g&oacute;rska</trd>
    <trd lng="sv">fj&auml;llripa</trd>
  </snc>
<trd lng="de">Alpenschneehuhn</trd>
</drv>

<drv mrk="lagop.skota0o">
  <kap>skota <tld/>o</kap>
  <snc>
    <uzo tip="fak">ZOO</uzo>
    <fnt>
       <aut>Wouter F. Pilger</aut>,
       <vrk>
         <url ref="http://www.xs4all.nl/~pilger/wfp/birdeou8.htm">
           Komunlingvaj nomoj de E&ubreve;ropaj birdoj</url>
       </vrk>
    </fnt>
    <dif>
      Subspecio de <ref tip="super" cel="lagop.0o">lagopo</ref>
      (<trd lng="la">Lagopus lagopus scotica</trd>).
    </dif>
    <trd lng="it"><ind>pernice</ind> bianca scozzese</trd>
    <trd lng="pl">pardwa szkocka</trd>
  </snc>
<trd lng="de">Schottisches Moorschneehuhn</trd>
</drv>
</art>

