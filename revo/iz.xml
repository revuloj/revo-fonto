<vortaro>
<art mrk="$Id: iz.xml,v 1.16 2024/12/12 08:37:04 revo Exp $">
<kap>
  -<rad>iz</rad> <fnt> <bib>PIV1</bib>, </fnt>
  <fnt><bib>PMEG</bib></fnt>
</kap>

<drv mrk="iz.0">
  <kap>-<tld/></kap>
  <gra>neoficiala <vspec>sufikso</vspec> transitiviga</gra>
  <uzo tip="fak">TEK</uzo>
  <snc mrk="iz.0.KOMUNE">
  <subsnc mrk="iz.0.provizi">
    <dif>
      Provizi per:
      <ekz>
        najlizi plandojn de &scirc;uo;
      </ekz><ekz>
        gluizi etikedojn;
      </ekz><ekz>
        <ref cel="elektr2.0i">elektr<tld/>i</ref>;
      </ekz><ekz>
        makadam<tld/>i.
      </ekz><ekz>
        <ref cel="valoriz.0i">valor<tld/>i</ref>;
      </ekz><ekz>
        <ref cel="vokaliz.0i">vokal<tld/>i</ref>;
      </ekz>
    </dif>
  </subsnc>
  <subsnc mrk="iz.0.metoda">
    <dif>
      Apliki metodon al:
      <ekz>
        paste&ubreve;r<tld/>i lakton;
      </ekz><ekz>
        galvan<tld/>i;
      </ekz><ekz>
        farad<tld/>i;
      </ekz><ekz>
        rentgen<tld/>i.
      </ekz>
    </dif>
  </subsnc>
  <rim>
    Iuj rigardas &ccirc;i tiun neoficialan sufikson evitinda.
    Ofte la sola verba radiko sufi&ccirc;as ne rompante la komprenon, a&ubreve;
    la sufikso <ref tip="sin" cel="um.0">-um</ref> ta&ubreve;gas tiel
    same la&ubreve; la kunteksto.
  </rim>
  </snc>
  <trdgrp lng="be">
    <trd>&c_a;&c_f;&c_ib;&c_k;&c_s; <klr>(&c_n;&c_je;&c_a;&c_f;&c_ib;&c_c;&c_y;&c_j;&c_n;&c_y;)</klr>, &c_ja;&c_k;&c_ib; &c_v;&c_y;&c_z;&c_n;&c_a;&c_ch;&c_a;&c_je; &c_p;&c_je;&c_r;&c_a;&c_h;&c_o;&c_d;&c_n;&c_y; &c_d;&c_z;&c_je;&c_ja;&c_s;&c_l;&c_o;&c_w;, &c_u; &c_e;&c_s;&c_p;&c_e;&c_r;&c_a;&c_n;&c_t;&c_a;</trd>,
    <trd>-&c_ib;&c_z;-</trd>
  </trdgrp>
  <trd lng="de"><klr>(inoffizielles Suffix, entspricht oft dem deutschen -isieren)</klr></trd>
  <trd lng="en"><klr>(unofficial suffix, often corresponding to English -ise/-ize)</klr></trd>
  </drv>
  <trdgrp lng="de">
    <trd>-isier-</trd>
    <trd>-ifizier-</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>-ize</trd>,
    <trd>-ise</trd>
  </trdgrp>
  <trd lng="ru">-&c_i;&c_z;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
</art>

