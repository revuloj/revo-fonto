<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>bluf</rad>/i<fnt>Z</fnt>
</kap>
<drv mrk="bluf.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Fanfaroni por trompi, &ccirc;arlatani:
      <ekz>
        &ccirc;io estas nur <tld/>o
        <fnt>(<aut>Zamenhof</aut>: <vrk>Fabeloj de Andersen,
        Ne&gcirc;a re&gcirc;ino</vrk>)</fnt>.
      </ekz> 
    </dif>
    <refgrp tip="vid">
      <ref cel="blag.0i">blagi</ref>,
      <ref cel="bombas.0o">bombasto</ref>,
      <ref cel="emfaz.0i">emfazi</ref>,
      <ref cel="mistif">mistifiki</ref>,
      <ref cel="blind">brilblindigi</ref>.
    </refgrp>
    <refgrp tip="vid">
      <ref cel="polv.0o">polvo</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="de">
    <trd>bluffen</trd>,
    <trd>vorspiegeln</trd>,
    <trd>vort&auml;uschen</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>bluffer</trd>,
    <trd>leurrer</trd>,
    <trd>tromper <klr tip="ind">(bluffer)</klr></trd></trdgrp> 
  <trdgrp lng="ru">
    <trd>&c_b;&c_l;&c_je;&c_f;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_v;&c_v;&c_o;&c_d;&c_i;&c_t;&c_mol; &c_v; &c_z;&c_a;&c_b;&c_l;&c_u;&c_zh;&c_d;&c_je;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_p;&c_u;&c_s;&c_k;&c_a;&c_t;&c_mol; &c_p;&c_y;&c_l;&c_mol; &c_v; &c_g;&c_l;&c_a;&c_z;&c_a;</trd>
  </trdgrp>
</drv>
</art>
