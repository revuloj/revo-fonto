    <trd>&#32048;&#24515;&#12394;  <pr>&#12373;&#12356;&#12375;&#12435;&#12394;</pr></trd>,
    <trd>&#12365;&#12385;&#12423;&#12358;&#12417;&#12435;&#12394;</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>godsdienstig</trd>,
    <trd>religieus</trd>
  </trdgrp>
  <trdgrp lng="pl">
