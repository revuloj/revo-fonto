    <trd>vall&aacute;si</trd>,
    <trd>vall&aacute;sos</trd>
  </trdgrp>
  <trdgrp lng="id">
    <trd>agamis</trd>,
    <trd>religius</trd>
  </trdgrp>
  <trdgrp lng="ja">
