<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>erar</rad>/i
</kap>
<drv mrk="erar.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc num="1">
    <dif>
      Deflanki&gcirc;i de la &gcirc;usta vojo, perdi la &gcirc;ustan vojon:
      <ekz>
        ne <tld/>u sur la vojo;
      </ekz>
      <ekz>
        ni longe <tld/>is en la arbaro;
      </ekz>
      <ekz>
        malsa&gcirc;eco de homo <tld/>igas lian vojon
        <fnt>(<aut>trad. Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
        <lok>Sentencoj 19, 3</lok>)</fnt>;
      </ekz>
      <ekz>
        <tld/>as for la penso al mia familia domo<fnt>Z</fnt>.
      </ekz> 
    </dif>
    <refgrp tip="sin">
      <ref cel="vag.0i">vagi</ref>.
    </refgrp>
  </snc>
  <snc num="2">
    <dif>
      Deflanki&gcirc;i de la vero, mal&gcirc;uste, opinii:
      <ekz>
        vi <tld/>as, sinjoro
        <fnt>(<aut>Prus, trad. Kabe</aut>: <vrk>La Faraono, 2a vol.</vrk>,
        <lok>&ccirc;ap. 22</lok>)</fnt>;
      </ekz>
      <ekz>
        <tld/>i en kalkulo, en gramatiko;
      </ekz>
      <ekz>
        nur tiu ne <tld/>as, kiu neniam ion faras
        <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>;
      </ekz>
      <ekz>
        la aspekto <tld/>igis lin
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="tromp.0igxi">trompi&gcirc;i</ref>,
      <ref cel="prav.mal0i">malpravi</ref>.
    </refgrp>
  </snc>
  <snc num="3">
    <dif>
      Deflanki&gcirc;i de la moralaj devoj, peki:
      <ekz>
        <ind>la <tld/>inta filo</ind> <trd lng="ru">&c_b;&c_l;&c_u;&c_d;&c_n;&c_y;&c_j; &c_s;&c_y;&c_n;</trd>.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">m&yacute;lit se</trd>
  <trd lng="de">irren</trd>
  <trd lng="en">err</trd>
  <trdgrp lng="ru">
    <trd>&c_o;&c_sh;&c_i;&c_b;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_o;&c_sh;&c_i;&c_b;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_z;&c_a;&c_b;&c_l;&c_u;&c_zh;&c_d;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>
  </trdgrp>
</drv>
<drv mrk="erar.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Malvera opinio, ka&ubreve;zita de nescio; mal&gcirc;usta opinio; 
      malkorekta&jcirc;o:
      <ekz>
        pro <tld/>o ne pravi&gcirc;as la faro
        <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>;
      </ekz>
      <ekz>
        peko kaj <tld/>o estas ecoj de l' homaro
        <fnt>(<aut>Zamenhof</aut>: <vrk>Proverbaro</vrk>)</fnt>;
      </ekz>
      <ekz>
        peko pro <tld/>o;
      </ekz>
      <ekz>
        peki per <tld/>o
        <fnt>(<aut>Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
        <lok>Nombroj 15, 27</lok>)</fnt>;
      </ekz>
      <ekz>
        gramatika <tld/>o  (<ref tip="vid" cel="har.0o">haro</ref>);
      </ekz>
      <ekz>
        kiu for&jcirc;etas la instruon restos en <tld/>o<fnt>Z</fnt>;
      </ekz>
      <ekz>
        mi ne farus la <tld/>on, se li estus
        tuj dirinta al mi la veron<fnt>Z</fnt>;
      </ekz>
      <ekz>
        pres<tld/>o; 
      </ekz>
      <ekz>
        rebonigi<fnt>Z</fnt>, korekti <tld/>on.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Fehler</trd>,
    <trd>Irrtum</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_o;&c_sh;&c_i;&c_b;&c_k;&c_a;</trd>,
    <trd>&c_z;&c_a;&c_b;&c_l;&c_u;&c_zh;&c_d;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
</drv>
<drv mrk="erar.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Enhavanta <tld/>o(j)n, mal&gcirc;usta, malkorekta:
      <ekz>
        <tld/>a teksto, rezono, kalkulo, respondo, metodo;
      </ekz>
      <ekz>
        la frazo estas ne tute bonstila, sed ne rekte <tld/>a<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>falsch</trd>,
    <trd>fehlerhaft</trd>
  </trdgrp>
  <trd lng="ru">&c_o;&c_sh;&c_i;&c_b;&c_o;&c_ch;&c_n;&c_y;&c_j;</trd>
</drv>
<drv mrk="erar.0ema">
  <kap><tld/>ema<fnt>Z</fnt></kap>
  <snc>
    <dif>
      Povanta <tld/>i:
      <ekz>
        la papo estas ne<tld/>ema pri la dogmo.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>fehlbar</trd>,
    <trd>fehleranf&auml;llig</trd>
  </trdgrp>
</drv>
<drv mrk="erar.0igi">
  <kap><tld/>igi<fnt>Z</fnt></kap>
  <snc>
    <dif> 
      Konduki en <tld/>on 
    </dif>
    <refgrp tip="sin">
      <ref cel="tromp.0i">trompi</ref>,
      <ref cel="blind.0igi">blindigi</ref>.
    </refgrp>
  </snc>
  <trd lng="de">irref&uuml;hren</trd>
  <trdgrp lng="ru">
    <trd>&c_v;&c_v;&c_je;&c_s;&c_t;&c_i; &c_v; &c_z;&c_a;&c_b;&c_l;&c_u;&c_zh;&c_d;&c_je;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_p;&c_r;&c_i;&c_v;&c_je;&c_s;&c_t;&c_i; &c_k; &c_o;&c_sh;&c_i;&c_b;&c_k;&c_je;</trd>
  </trdgrp>
</drv>
<drv mrk="erar.0lumo">
  <kap><tld/>lumo<fnt>Z</fnt></kap>
  <snc>
    <dif>
      Lumeto vaganta sur la mar&ccirc;oj, produktata de malkomponi&gcirc;o de
      organikaj substancoj.
    </dif>
  </snc>
  <trd lng="de">Irrlicht</trd>
  <trd lng="ru">&c_b;&c_l;&c_u;&c_zh;&c_d;&c_a;&c_ju;&c_shch;&c_i;&c_j; &c_o;&c_g;&c_o;&c_n;&c_jo;&c_k;</trd>
</drv>
</art>
