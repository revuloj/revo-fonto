<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>konsil</rad>/i
</kap>
<drv mrk="konsil.0i">
  <kap>
    <ofc>*</ofc><tld/>i
  </kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Montri al iu tion, kion oni opinias, ke li devus fari:
      <ekz>
        la kuracisto <tld/>is al mi iri en &scirc;vitbanejon<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la montritajn na&ubreve; vortojn mi <tld/>as bone ellerni<fnt>Z</fnt>;
      </ekz>
      <ekz>
        oni <tld/>as kaj konsolas sed helpi ne volas<fnt>Z</fnt>;
      </ekz>
      <ekz>
        ne<tld/>ebla karaktero<fnt>Z</fnt>
        <klr>(kiu ne volas esti <tld/>ata)</klr>;
      </ekz>
      <ekz>
        nek helpeme, nek <tld/>eble<fnt>Z</fnt>
        <klr>(pp tute embarasita situacio, pri kiu oni povas nek helpi, nek
        <tld/>i)</klr>;
      </ekz>
      <ekz>
        kie <tld/>eble, tie helpeble<fnt>Z</fnt>
        <klr>(oni &ccirc;iam povas helpi tiujn, kiuj lasas <tld/>i al si)</klr>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="instig.0i">instigi</ref>.
    </refgrp>
  </snc>
  <trd lng="cs">radit</trd>
  <trd lng="en">counsel</trd>
  <trd lng="nl">aanraden</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_o;&c_v;&c_je;&c_t;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_r;&c_je;&c_k;&c_o;&c_m;&c_je;&c_n;&c_d;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="konsil.0o">
  <kap>
    <tld/>o
  </kap>
  <snc>
    <dif>
      Indiko donita al iu pri tio, kion oni opinias, ke li devus fari:
      <ekz>
        sa&gcirc;ulo a&ubreve;skultas <tld/>on<fnt>Z</fnt>;
      </ekz>
      <ekz>
        montroj kaj <tld/>oj estas facilaj<fnt>Z</fnt>;
      </ekz>
      <ekz>
        post dorma trankvilo venas bona <tld/>o<fnt>Z</fnt>;
      </ekz>
      <ekz>
        peti <tld/>on de iu<fnt>Z</fnt>
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="aviz.0o">avizo</ref>,
      <ref cel="avert">averto</ref>,
      <ref cel="admon">admono</ref>,
      <ref cel="instru">instruo</ref>.
    </refgrp>
  </snc>
  <snc>
    <dif>
      Proponita agmaniero, rimedo:
      <ekz>
        kontra&ubreve; &ccirc;iu malfacilo ekzistas <tld/>o<fnt>Z</fnt>
        (<ref tip="vid" cel="ted">tedo</ref>);
      </ekz>
      <ekz>
        ni ne scias alian <tld/>on ol prokrasti la aferon;
      </ekz>
      <ekz>
        ne ekzistas sa&gcirc;o, ne ekzistas prudento,
        ne ekzistas <tld/>o kontra&ubreve; Dio<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <snc>
    <dif>
      <tld/>antaro:
      <ekz>
        kunvoki la <tld/>on<fnt>Z</fnt>,
      </ekz>
    </dif>
  </snc>
  <trd lng="nl">raad</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_o;&c_v;&c_je;&c_t;</trd>,
    <trd>&c_r;&c_je;&c_k;&c_o;&c_m;&c_je;&c_n;&c_d;&c_a;&c_c;&c_i;&c_ja;</trd>
  </trdgrp>
</drv>

<drv mrk="konsil.0anaro0antaro0istaro">
  <kap>
    <tld/>anaro, <tld/>antaro, <tld/>istaro
  </kap>
  <snc>
    <dif>
      Aro da personoj komisiitaj por <tld/>i estron de regno, armeo,
      distrikto ktp:
      <ekz>
        la <tld/>istaro de la Ligo de Nacioj
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="komisi1.0o">komisiono</ref>,
      <ref cel="komita.0o">komitato</ref>.
    </refgrp>
  </snc>
  <trd lng="nl">raad(gevend lichaam)</trd>
</drv>

<drv mrk="konsil.0igxi">
  <kap>
    <tld/>i&gcirc;i
  </kap>
  <snc>
    <dif>
      Peti de iu, ke li <tld/>u, konsulti:
      <ekz>
        li <tld/>i&gcirc;is kun siaj servistoj<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="nl">beraadslagen</trd>
  <trd lng="ru">&c_s;&c_o;&c_v;&c_je;&c_t;&c_o;&c_v;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>
</drv>

<drv mrk="konsil.de0imal0i">
  <kap>
    de<tld/>i, mal<tld/>i
  </kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      <tld lit="K"/>i iun, ke li ne faru ian agon, averti 3.
    </dif>
  </snc>
  <trd lng="nl">afraden</trd>
  <trd lng="ru">&c_o;&c_t;&c_s;&c_o;&c_v;&c_je;&c_t;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
</drv>
</art>
