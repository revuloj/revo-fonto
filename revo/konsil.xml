<drv mrk="konsil.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="konsil.0i.KOMUNE">
    <dif>
      Indiki al iu tion, kion oni opinias, ke li devus fari:
      <ekz>
        la kuracisto <tld/>is al mi iri en &scirc;vitbanejon
        <fnt><bib>F</bib>, <lok>&FE; 40</lok></fnt>;
      </ekz>
      <ekz>
        la montritajn na&ubreve; vortojn mi <tld/>as bone ellerni
        <fnt><bib>F</bib>, <lok>&FE; 30</lok></fnt>;
      </ekz>
      <ekz>
        kion vi <tld/>as, ke ni respondu
        <fnt>
          <bib>MT</bib>
          <lok>II. Kroniko 10:9</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi <tld/>as do, anta&ubreve; &ccirc;io, fari <klr>[&#x2026;]</klr> pre&gcirc;ojn
        <fnt>
          <bib>NT</bib>
          <lok>I. Timoteo 2:1</lok>
        </fnt>;
      </ekz>
      <ekz>
        la pastroj, kiuj okupi&gcirc;as per la kuracado, <tld/>as &scirc;an&gcirc;adi la nutra&jcirc;on
        <fnt>
          <bib>Far1</bib>
          <lok>&Ccirc;apitro XII</lok>
        </fnt>;
      </ekz>
      <ekz>
        mia racio <tld/>as singardon
        <fnt>
          <bib>ChV</bib>
          <lok>26</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>i al ili kiel &ccirc;ifri sian komunikadon
        <fnt>
          <bib>Kon11</bib>
          <lok>&Ccirc;efartikolo</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi <tld/>us pli da organizo, pli da strikteco
        <fnt>
          <bib>Kon11</bib>
          <lok>&Ccirc;efartikolo &ndash; Aejk</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[&scirc;i]</klr> <tld/>u al ili pri problemoj
        <fnt>
          <bib>KrM</bib>
          <lok>40. Kaj Rapide Kreskas La Afero.</lok>
        </fnt>;
      </ekz>
      <ekz>
        La nekonsilebla &parsl; Fratino de l&#x2019; eterna sorto regas &parsl; Silente
        <fnt>
          <bib>Ifigenio</bib>
          <lok>Ifigenio en Ta&ubreve;rido</lok>
        </fnt>;
      </ekz>
      <ekz>
        nek helpeble, nek <tld/>eble
        <fnt>
          <bib>PrV</bib>
        </fnt>
        <klr>(pp tute embarasita situacio,
        pri kiu oni povas nek helpi, nek <tld/>i)</klr>;
      </ekz><ekz>
        kie ne estas <tld/>eble, tie ne estas helpeble
        <klr>(necesas <tld/>i por helpi)</klr>
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        oni <tld/>as kaj konsolas sed helpi ne
        volas
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
  </snc>
  <ref tip="sin" cel="rekome.0i.agon">rekomendi</ref>
  <refgrp tip="vid">
    <ref cel="instig.0i">instigi</ref>,
    <ref cel="propon.0i.por_jugho">proponi<sncref/></ref>,
    <ref cel="sugest.0i.proponi">sugesti<sncref/></ref>
  </refgrp>
  <trdgrp lng="be">
    <trd>&c_r;&c_a;&c_ib;&c_c;&c_mol;</trd>,
    <trd>&c_r;&c_a;&c_d;&c_z;&c_ib;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="cs">radit</trd>
  <trd lng="es">aconsejar</trd>
  <trdgrp lng="de">
 <trd>raten</trd>,
 <trd>anraten</trd>,
 <trd>beraten</trd>
  </trdgrp>
  <trdgrp lng="en"><trd>to advise</trd>, <trd>counsel</trd></trdgrp>
  <trd lng="fr">conseiller</trd>
  <trdgrp lng="id">
    <trd>meng<ind>anjur</ind>kan</trd>,
    <trd>me<ind>nasihat</ind>i</trd>
  </trdgrp>
  <trd lng="id"><baz>saran</baz>menyarankan</trd>
  <trdgrp lng="ja">
    <trd>&#x52A9;&#x8A00;&#x3059;&#x308B;  <pr>&#x3058;&#x3087;&#x3052;&#x3093;&#x3059;&#x308B;</pr></trd>,
    <trd>&#x52E7;&#x3081;&#x308B;  <pr>&#x3059;&#x3059;&#x3081;&#x308B;</pr></trd>,
    <trd>&#x5FE0;&#x544A;&#x3059;&#x308B;  <pr>&#x3061;&#x3085;&#x3046;&#x3053;&#x304F;&#x3059;&#x308B;</pr></trd>
  </trdgrp>
  <trd lng="nl">aanraden</trd>
  <trd lng="ms">menasihat</trd>
  <trdgrp lng="pl">
    <trd>radzi&cacute;</trd>,
    <trd>doradza&cacute;</trd>,
    <trd>poleca&cacute;</trd>,
    <trd>konsultowa&cacute;</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>aconselhar</trd>,
    <trd>persuadir</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_o;&c_v;&c_je;&c_t;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trd lng="sk">radi&tcaron;</trd>
  <trd lng="cs">radit, poradit</trd>
<trdgrp lng="id">
  <trd><baz>saran</baz>menyarankan</trd>,
  <trd><baz>anjur</baz>menganjurkan</trd>,
  <trd><baz>nasihat</baz>menasihati</trd>
</trdgrp>
  <trdgrp lng="zh">
    <trd>&#x529D;&#x8BF4; <pr>qu&agrave;nshu&omacron;</pr></trd>,
    <trd>&#x529D;&#x544A; <pr>qu&agrave;ng&agrave;o</pr></trd>,
    <trd>&#x529D; <pr>qu&agrave;n</pr></trd>,
    <trd>&#x529D;&#x5BFC; <pr>qu&agrave;nd&#x1CE;o</pr></trd>,
    <trd>&#x76F8;&#x529D; <pr>xi&amacron;ngqu&agrave;n</pr></trd>,
    <trd>&#x898F;&#x52F8; <pr>gu&imacron;qu&agrave;n</pr></trd>,
    <trd>&#x5FE0;&#x544A; <pr>zh&omacron;ngg&agrave;o</pr></trd>
  </trdgrp>
</drv>

<drv mrk="konsil.0o">
  <kap><tld/>o</kap>
  <snc mrk="konsil.0o.ideo">
    <dif>
      Indiko donita al iu pri tio, kion oni opinias, ke li devus fari:
      <ekz>
        li ne atentis la <tld/>on de la maljunuloj
        <fnt>
          <bib>MT</bib>
          <lok>I. Re&gcirc;oj 12:8</lok>
        </fnt>;
      </ekz>
      <ekz>
        sa&gcirc;ulo a&ubreve;skultas <tld/>on
        <fnt>
          <bib>MT</bib>. <lok>Sentencoj 12:15</lok></fnt>;
      </ekz>
      <ekz>
        anstata&ubreve; kuri sur la teraso, obeu mian <tld/>on kaj ku&scirc;i&gcirc;u
        <fnt>
          <bib>Far1</bib>
          <lok>&Ccirc;apitro V</lok>
        </fnt>;
      </ekz>
      <ekz>
        Kaj vi de mi akceptu la <tld/>on, //
        Ne amu tro la sunon kaj la stelojn
        <fnt>
          <aut>Goeto, tr. &Z;</aut>:
          <vrk>Ifigenio en Ta&ubreve;rido</vrk>. <lok>3:1</lok>
        </fnt>;
      </ekz><ekz>
        vi ne sekvis la <tld/>on de fidelulo
        <fnt>
          <aut>Goeto, tr. &Z;</aut>:
          <vrk>Ifigenio en Ta&ubreve;rido</vrk>. <lok>4:2</lok>
        </fnt>!
      </ekz><ekz>
        montroj kaj <tld/>oj estas facilaj
        <fnt><bib>PrV</bib></fnt>;
      </ekz><ekz>
        peti <tld/>on de iu
        <fnt>
          <bib>MT</bib>. <lok>Jesaja 40:14</lok></fnt>
        <fnt><bib>Far2</bib>. <lok>&Ccirc;apitro XXIII</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="admon.0o">admono</ref>,
      <ref cel="avert">averto</ref>,
      <ref cel="aviz.0o">avizo</ref>,
      <ref cel="instru.0o">instruo</ref>
    </refgrp>
    <trdgrp lng="de">
      <trd>Rat</trd>,
      <trd>Ratschlag</trd>,
      <trd>Empfehlung</trd>
    </trdgrp>
    <trd lng="ms">nashihat</trd>
    <trdgrp lng="en">
      <trd>advice</trd>,
      <trd>counsel</trd>, <trd>opinion</trd>
    </trdgrp>
    <trd lng="es">consejo</trd>
      <trdgrp lng="nl">
      <trd>raad</trd>,
      <trd>raadgeving</trd>
    </trdgrp>
    <trdgrp lng="pl">
      <trd>rada</trd>,
      <trd>porada</trd>,
      <trd>konsultacja</trd>
    </trdgrp>
    <trdgrp lng="zh">
    <trd>&#x529D;&#x544A; <pr>qu&agrave;ng&agrave;o</pr></trd>,
    <trd>&#x5FE0;&#x544A; <pr>zh&omacron;ngg&agrave;o</pr></trd>,
    <trd>&#x8CBC;&#x58EB; <pr>ti&emacron;sh&igrave;</pr></trd>,
    <trd>&#x4E3B;&#x610F; <pr>zh&#x1D4;yi</pr></trd>
  </trdgrp>
</snc>
  <snc mrk="konsil.0o.rimedo">
    <uzo tip="stl">ARK</uzo>
    <dif>
      <ref tip="dif" cel="turn.el0igxo">Elturni&gcirc;o</ref> el embaraso:
      <ekz>
        ni ne scias alian <tld/>on ol prokrasti la aferon;
      </ekz>
      <ekz>
        ne ekzistas sa&gcirc;o, ne ekzistas prudento,
        ne ekzistas <tld/>o kontra&ubreve; la Eternulo
        <fnt>
          <bib>MT</bib>
          <lok>Sentencoj 21:30</lok>
        </fnt>;
      </ekz>
      <ekz>
        kontra&ubreve; &ccirc;iu malfacilo ekzistas <tld/>o
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        post dorma trankvilo venas bona <tld/>o
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="ebl.0eco">ebleco</ref>,
      <ref cel="ir.el0ejo.FIG">elirejo<sncref/></ref>,
      <ref cel="help.0o">helpo</ref>,
      <ref cel="solv.0o.ago">solvo<sncref/></ref>
    </refgrp>
    <trdgrp lng="de">
      <trd>Abhilfe</trd>,
      <trd>Rat <klr>(Abhilfe)</klr></trd>
    </trdgrp>
    <trdgrp lng="en">
      <trd>counsel</trd>,
      <trd>clue</trd>
    </trdgrp>
    <trdgrp lng="nl">
      <trd>raad<klr tip="ind"> (arch.)</klr></trd>,
      <trd>aanbeveling<klr tip="ind"> (arch.)</klr></trd>
    </trdgrp>
    <trd lng="pl">rada</trd>
    <trdgrp lng="zh">
    <trd>&#x7AEF;&#x502A; <pr>du&amacron;nn&iacute;</pr></trd>,
    <trd>&#x7AEF;&#x7DD2; <pr>du&amacron;nx&ugrave;</pr></trd>,
    <trd>&#x86DB;&#x4E1D;&#x9A6C;&#x8FF9; <pr>zh&umacron;s&imacron;m&#x1CE;j&igrave;</pr></trd>,
    <trd>&#x8CBC;&#x58EB; <pr>ti&emacron;sh&igrave;</pr></trd>,
    <trd>&#x5934;&#x8DEF; <pr>t&oacute;ul&ugrave;</pr></trd>,
    <trd>&#x7DD2; <pr>x&ugrave;</pr></trd>
  </trdgrp>
</snc>
  <trd lng="be">&c_p;&c_a;&c_r;&c_a;&c_d;&c_a;</trd>
  <trd lng="bo">&t_ba;&t_sa;&t_lata;&t_ba;&t_tsheg;&t_ba;&t_yata;&t_tsheg;&t_ra;&t_gata;&t_yata;&t_ga;&t_tsheg;</trd>
  <trd lng="cs">rada <klr>(ud&ecaron;lovan&aacute;)</klr></trd>
  <trdgrp lng="en">
    <trd>council</trd>,
    <trd>counsel <klr>(legal advocate(s))</klr></trd>
  </trdgrp>
  <trd lng="fr">conseil</trd>
  <trdgrp lng="id">
    <trd>advis</trd>,
    <trd><baz>anjur</baz>anjuran</trd>,
    <trd>nasihat</trd>,
    <trd>saran</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x52A9;&#x8A00;  <pr>&#x3058;&#x3087;&#x3052;&#x3093;</pr></trd>,
    <trd>&#x52E7;&#x544A;  <pr>&#x304B;&#x3093;&#x3053;&#x304F;</pr></trd>,
    <trd>&#x5FE0;&#x544A;  <pr>&#x3061;&#x3085;&#x3046;&#x3053;&#x304F;</pr></trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_o;&c_v;&c_je;&c_t;</trd>
  <trd lng="sk">rada</trd>
</drv>

