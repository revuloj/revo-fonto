<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: idili.xml,v 1.24 2023/11/19 10:22:02 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>idili</rad>/o
</kap>
<drv mrk="idili.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="idili.0o.POE">
    <uzo tip="fak">POE</uzo>
    <dif>
      <ref cel="poem.0o.versajxo">Poemeto</ref> pri la&ubreve;natura, kampara vivo,
      kaj plejofte pri naivaj amoj de pa&scirc;tistoj:
      <ekz>
        legisto legis al ili dum la man&gcirc;o <tld/>ojn de Teokrito
        <fnt>
          <bib>QuV</bib>
          <lok>&Ccirc;apitro LVII</lok>
        </fnt>;
      </ekz>
      <ekz>
        dialogaj <tld/>oj bone verkitaj kaj rimitaj
        <fnt>
          <bib>Kandid</bib>
          <lok>&Ccirc;apitro XXII</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="bukolik.0o">bukoliko</ref>,
      <ref cel="eklog.0o">eklogo</ref>
    </refgrp>
  </snc>
  <snc mrk="idili.0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <dif>
      Loko, situacio trankvila, amplena, tia, kiel &gcirc;in priskribas <ref cel="idili.0o.POE">idilio<sncref/></ref>:
      <ekz>
        la sennuba <tld/>o de &scirc;ia infaneco
        <fnt><bib>Marta</bib></fnt>;
      </ekz>
      <ekz>
        tia kvieto trankviligas kaj igas son&gcirc;i, inter &ccirc;i tiuj arboj oni dezirus vidi
        <tld/>on
        <fnt>
          <bib>IK</bib>
          <lok>&Ccirc;apitro I</lok>
        </fnt>;
      </ekz>
      <ekz>
        kiam mi eliris el la brakoj de mia amikino, la <tld/>o aliformi&gcirc;is en tragedion
        <fnt>
          <bib>KPr</bib>
          <lok>&Ccirc;apitro Dektria</lok>
        </fnt>;
      </ekz>
      <ekz>
        &ccirc;u kun multa turismo tia <tld/>o restos paradizo, estas alia afero
        <fnt>
          <bib>Monato</bib>
          <aut>Stefan MAUL</aut>
          <vrk>Ri&ccirc;a per .tv</vrk>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="eden.0o.FIG">edeno<sncref/></ref>,
      <ref cel="paradi1.0o.FIG">paradizo<sncref/></ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_ib;&c_d;&c_y;&c_l;&c_ib;&c_ja;</trd>
  <trd lng="bg">&c_i;&c_d;&c_i;&c_l;&c_i;&c_ja;</trd>
  <trdgrp lng="cs">
    <trd>idyla</trd>,
    <trd>selanka</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Idylle</trd>,
    <trd>Idyll</trd>
  </trdgrp>
  <trd lng="en">idyll</trd>
  <trd lng="fr">idylle</trd>
  <trd lng="hu">idill</trd>
  <trdgrp lng="ja">
    <trd>&#x7267;&#x6B4C;  <pr>&#x307C;&#x3063;&#x304B;</pr></trd>,
    <trd>&#x7530;&#x5712;&#x8A69;  <pr>&#x3067;&#x3093;&#x3048;&#x3093;&#x3057;</pr></trd>,
    <trd>&#x7D20;&#x6734;&#x306A;&#x604B;&#x611B;  <pr>&#x305D;&#x307C;&#x304F;&#x306A;&#x308C;&#x3093;&#x3042;&#x3044;</pr></trd>
  </trdgrp>
  <trd lng="nl">idylle</trd>
  <trdgrp lng="pl">
    <trd>idylla</trd>,
    <trd>sielanka</trd>
  </trdgrp>
  <trd lng="pt">id&iacute;lio</trd>
  <trd lng="ru">&c_i;&c_d;&c_i;&c_l;&c_l;&c_i;&c_ja;</trd>
  <trd lng="sk">idyla</trd>
  <trd lng="uk">&c_ib;&c_d;&c_i;&c_l;&c_ib;&c_ja;</trd>
  <trdgrp lng="zh">
    <trd>&#x7267;&#x6B4C; <pr>m&#xF9;g&#x113;</pr></trd>,
    <trd>&#x7530;&#x56ED;&#x751F;&#x6D3B; <pr>ti&#xE1;nyu&#xE1;nsh&#x113;nghu&#xF3;</pr></trd>,
    <trd>&#x7530;&#x56ED;&#x8BD7; <pr>ti&#xE1;nyu&#xE1;nsh&#x12B;</pr></trd>,
    <trd>&#x7530;&#x56ED;&#x98CE;&#x5149; <pr>ti&#xE1;nyu&#xE1;nf&#x113;nggu&#x101;ng</pr></trd>
  </trdgrp>
</drv>
</art>
