<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: sal1.xml,v 1.7 2024/09/24 01:55:58 revo Exp $">
<kap>
    <rad>sal</rad>
</kap>
<drv mrk="sal1.0">
  <kap><tld/></kap>
  <gra><vspec>ekkrio</vspec></gra>
  <snc mrk="sal1.0.KOMUNE">
    <dif>
      Malformala saluto okaze de renkonto:
      <ekz>
        <tld/>, Sara! finfine vi alvenas!
        <fnt>
          <aut>La Krikenhara Kvaropo</aut>
          <vrk><url ref="&Monato;/2019/012380.php">Kla&ccirc;-kunveno per-spirita</url></vrk>
          <lok>novelo eldonita en </lok>
          <bib>Monato</bib>
          <lok>2019/07, p. 25</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>, amikinoj! pardonu la malfruon!
        <fnt>
          <aut>Federico Gobbo</aut>
          <vrk>Amikaro</vrk>
          <lok>&ccirc;apitro 5a, p. 62a</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>, Jo&ccirc;jo! <tld/>, gaja! kiel vi?
        <fnt>
          <aut>Federiko Gobbo kaj Yuri Gamberoni</aut>
          <vrk><url
          ref="https://books.google.nl/books?id=IZp7DwAAQBAJ&amp;pg=PA38&amp;dq=%22sal%22#v=onepage&amp;q=%22sal%22&amp;f=false">
            Bonvenon! La&ubreve;ra kaj Petro malkovras Esperanton</url></vrk>
          <lok>p. 38a</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="salut.0o">saluton</ref>
    <ref tip="vid" cel="he.0">hej</ref>
  </snc>
  <rim><em><tld lit="S"/></em> estas neregula slanga mallongigo de
  <em>saluton</em>.</rim>
  <trdgrp lng="be">
    <trd>&c_s;&c_a;&c_l;&c_ju;&c_t;!</trd>,
    <trd>&c_z;&c_d;&c_a;&c_r;&c_o;&c_w;&c_k;&c_ib;!</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Tach</trd>,
    <trd>hi</trd>,
    <trd>moin</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>hi</trd>,
    <trd>hey<klr tip="ind"> (greeting)</klr></trd>
  </trdgrp>
  <trd lng="fr">salut</trd>
  <trd lng="ja">&#12420;&#12354;</trd>
  <trdgrp lng="nl">
    <trd>hoi</trd>,
    <trd>h&eacute;<klr tip="ind"> (informele groet)</klr></trd>
  </trdgrp>
  <trd lng="pl">serwus!</trd>
  <trd lng="tok">toki<klr tip="ind"> (ekkrio)</klr></trd>
</drv>
</art>

