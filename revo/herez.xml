<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>herez</rad>/o
</kap>
<drv mrk="herez.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <uzo tip="fak">REL</uzo>
    <dif>
      Doktrino a&ubreve; opinio kontra&ubreve;a al iu religia dogmo kaj tial
      kondamnita de iu eklezio:
      <ekz>
        <ind><tld/>a</ind> kredo, aserto.
        <trd lng="fr">h&eacute;r&eacute;tique<klr tip="ind"> (adj.)</klr></trd>
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>H&auml;resie</trd>,
      <trd>Ketzerei</trd>
    </trdgrp>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      Opinio tute kontra&ubreve;a al la komune akceptataj ideoj:
      <ekz>
        tio, kion vi diras, estas <tld/>o en medicino.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="parado.0o">paradokso</ref>,
      <ref cel="mensog">mensogo</ref>.
    </refgrp>
    <trdgrp lng="de">
      <trd>Irrlehre</trd>,
      <trd>Widerspruchsmeinung</trd>
    </trdgrp>
  </snc>
  <trd lng="el">(&theta;&rho;&eta;&sigma;&kappa;&epsilon;&ypsilon;&tau;&jota;&kappa;&eta_ton;) <ind>&alfa;&jota_ton;&rho;&epsilon;&sigma;&eta;</ind></trd>
  <trd lng="fr">h&eacute;r&eacute;sie</trd>
  <trd lng="nl">ketterij</trd>
  <trdgrp lng="pl">
    <trd>herezja</trd>, <trd>kacerstwo</trd>
  </trdgrp>
  <trd lng="pt">heresia</trd>
  <trd lng="ru">&c_je;&c_r;&c_je;&c_s;&c_mol;</trd>
</drv>

<drv mrk="herez.0i">
  <kap><tld/>i</kap>
  <snc>
    <dif>
      Esti <tld/>ulo, <tld/>e opinii.
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>ketzerisch sein</trd>,
    <trd>ketzerisch handeln</trd>
  </trdgrp>
  <trd lng="fr">&ecirc;tre <ind>h&eacute;r&eacute;tique</ind></trd>
  <trd lng="nl">ketteren</trd>
  <trdgrp lng="pl">
    <trd>by&cacute; heretykiem</trd>,
    <trd>wyg&lstroke;asza&cacute; pogl&aogonek;dy heretyckie</trd>
  </trdgrp>
  <trd lng="ru">&c_v;&c_p;&c_a;&c_d;&c_a;&c_t;&c_mol; &c_v; &c_je;&c_r;&c_je;&c_s;&c_mol;</trd>
</drv>

<drv mrk="herez.0ulo">
  <kap><tld/>ulo</kap>
  <snc>
    <dif>
      Homo, kiu kredas a&ubreve; predikas <tld/>on:
      <ekz>
        en mezepoko oni bruligadis <tld/>ulojn.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="auxtod.0o">a&ubreve;todafeo</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="de">
    <trd>H&auml;retiker</trd>,
    <trd>Ketzer</trd>
  </trdgrp>
  <trd lng="el">&alfa;&jota;&rho;&epsilon;&tau;&jota;&kappa;&omikron_ton;&sigma_fina;</trd>
  <trd lng="fr">h&eacute;r&eacute;tique<klr tip="ind"> (subst.)</klr></trd>
  <trd lng="nl">ketter</trd>
  <trdgrp lng="pl">
    <trd>heretyk</trd>, <trd>kacerz</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>herege</trd>,
    <trd>her&eacute;tico</trd>
  </trdgrp>
  <trd lng="ru">&c_je;&c_r;&c_je;&c_t;&c_i;&c_k;</trd>
</drv>

<drv mrk="herez.cxef0ulo">
  <kap>&ccirc;ef<tld/>ulo</kap>
  <snc>
    <dif>
      Homo, kiu iniciatis <tld/>on.
    </dif>
  </snc>
  <trd lng="fr">h&eacute;r&eacute;siarque</trd>
  <trd lng="nl">aartsketter</trd>
  <trd lng="pl">herezjarcha</trd>
  <trd lng="ru">&c_je;&c_r;&c_je;&c_s;&c_i;&c_a;&c_r;&c_h;</trd>
</drv>
</art>
