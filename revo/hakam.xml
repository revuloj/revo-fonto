<kap>
  <rad>hakam</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>

<drv mrk="hakam.0o">
  <kap><tld/>o</kap>
  <snc mrk="hakam.0o.TEKS">
    <uzo tip="fak">TEKS</uzo>
    <dif>
      Tradicia japana <ref tip="super" cel="pantal.0o.TEKS">pantalono</ref>
      kun lar&gcirc;aj krurumoj, amba&ubreve;seksa
      <ref tip="lst" lst="voko:vesta&jcirc;oj" cel="vest.0o.TEKS">vesto</ref>
      ankora&ubreve; uzata en iuj sportoj kaj ceremonioj:
      <ekz>
        li staras en hakamo kun strioj malsubtilaj, klinante &ccirc;irka&ubreve; tridek gradoj la kolon maldekstren
        <fnt>
          <aut>Tacuo Hu&gcirc;imoto</aut>,
          <vrk><url ref="http://verkojdetacuo.net/malhomo.html">
          Malhomo</url></vrk>,
          <lok>[vidita en 2019]</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">hakama</trd>
  <trd lng="uk">&#x445;&#x430;&#x43A;&#x430;&#x43C;&#x430;</trd>
</drv>
</art>

