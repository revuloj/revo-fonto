<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>balbut</rad>/i
</kap>
<drv mrk="balbut.0i">
<kap><ofc>*</ofc><tld/>i</kap>
<snc num="1">
<gra><vspec>tr</vspec></gra>
  <dif>
    Diri, parolante kun malfacilo, kriplige, nedistingeble:
    <ekz>
       &scirc;i balbutis kelkajn vortojn, kiujn tamen neniu povis kompreni
       <fnt><bib>Fab4</bib>, <lok>Historio el la dunoj</lok></fnt>;
    </ekz>
    <klr>(abs.)</klr>
    <ekz>la infaneto apena&ubreve; komencas <tld/>i;</ekz>
    <ekz>ili posedas la lingvon tre malbone k malfacile <tld/>as
    anstata&ubreve; paroli flue<fnt>Z</fnt>.</ekz>
  </dif>
  <trd lng="be">&c_m;&c_a;&c_r;&c_m;&c_y;&c_t;&c_a;&c_c;&c_mol;</trd>
  <trdgrp lng="de">
     <trd>stammeln</trd>,
     <trd>lallen</trd>
  </trdgrp>
  <trd lng="es">balbucear</trd>
  <trdgrp lng="fr">
     <trd>balbutier</trd>,
     <trd>bredouiller</trd></trdgrp>
  <trd lng="hu">motyog</trd>
  <trdgrp lng="ru">
     <trd>&c_b;&c_o;&c_r;&c_m;&c_o;&c_t;&c_a;&c_t;&c_mol;</trd>,
     <trd>&c_l;&c_je;&c_p;&c_je;&c_t;&c_a;&c_t;&c_mol;</trd>,
     <trd>&c_n;&c_je;&c_v;&c_n;&c_ja;&c_t;&c_n;&c_o; &c_g;&c_o;&c_v;&c_o;&c_r;&c_i;&c_t;&c_mol;</trd>
  </trdgrp>
</snc>
<snc mrk="balbut.0i.MED">
  <uzo tip="fak">MED</uzo>
  <gra><vspec>ntr</vspec></gra>
  <dif>
  Havi elparolan difekton, pro kiu oni parolas kun haltetoj kaj ripetoj de
  silaboj:
  <ekz>ofte tiu, kiu <tld/>as parolante, &ccirc;esas <tld/>i kantante.</ekz>
  </dif>
  <refgrp tip="vid">
  <ref cel="kartav.0i">kartavi</ref>.
  </refgrp>
  <trd lng="be">&c_z;&c_a;&c_ib;&c_k;&c_a;&c_c;&c_c;&c_a;</trd>
  <trd lng="cs">koktat</trd>
  <trd lng="de">stottern</trd>
  <trd lng="fr">b&eacute;gayer<klr tip="ind"> (intr.)</klr></trd>
  <trd lng="hu">dadog</trd>
  <trdgrp lng="ru">
     <trd>&c_z;&c_a;&c_i;&c_k;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>,
     <trd>&c_z;&c_a;&c_p;&c_i;&c_n;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>
  </trdgrp>
</snc>
<trdgrp lng="en">
  <trd>stutter</trd>,
  <trd>stammer</trd>
</trdgrp>
<trd lng="nl">stotteren</trd>
<trd lng="sk">kokta&tcaron;</trd>
<trd lng="sv">stamma</trd>
</drv>

     <drv mrk="balbut.0ulo">
       <kap><tld/>ulo</kap>
       <snc>
         <dif>
           Homo, afekciata de <tld/>ado <sncref ref="balbut.0i.MED"/>.
           <ekz>
           </ekz>
         </dif>
       </snc>
       <trd lng="cs">kokta; koktal</trd>
       <trd lng="de">Stotterer</trd>
       <trdgrp lng="en">
          <trd>stutterer</trd>,
          <trd>stammerer</trd>
       </trdgrp>
       <trd lng="fr">b&egrave;gue</trd>
       <trd lng="nl">stotteraar</trd>
       <trd lng="hu">dadog&oacute;</trd>
       <trd lng="ru">&c_z;&c_a;&c_i;&c_k;&c_a;</trd>
     </drv>

</art>
