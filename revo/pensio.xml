<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: pensio.xml,v 1.19 2022/08/29 06:17:45 revo Exp $">
<kap>
  <ofc>2</ofc>
  <rad>pension</rad>/o <fnt><bib>VdE</bib></fnt>
</kap>
<drv mrk="pensio.0o">
  <kap><tld/>o</kap>
  <snc mrk="pensio.0o.gastejo">
    <dif>
      <ref tip="super" cel="dom.0o.konstruajxo">Domo</ref>, kie oni 
      povas konstante lo&gcirc;i kaj man&gcirc;i, pagante
      interkonsentitan monsumon:
      <ekz>
        unu domo estas uzata kiel <tld/>o, kies mastro, okupinte por si mem ne pli ol
        unu &ccirc;ambron kaj kuirejeton, forluigas &ccirc;iujn aliajn <ref cel="aparta.0o">apartamento</ref>jn
        <fnt>
          <bib>IdO</bib>
          <lok>Kvara Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        tra fenestroj de hoteloj, <tld/>oj, domoj kaj dometoj, multege da vizitantoj
        rigardis &ccirc;agrene
        <fnt>
          <bib>TAA</bib>
          <lok>&Ccirc;apitro XI.</lok>
        </fnt>;
      </ekz>
      <ekz>
        necesas mendi hotelon a&ubreve; <tld/>on minimume unu jaron anta&ubreve; la venonta festivalo
        <fnt>
          <bib>Monato</bib>
          <aut>Paul Gubbins</aut>
          <vrk><url ref="https://www.monato.be/2006/009028.php"
              >Angla festivalo en Kimrio</url></vrk>
          <lok>2006</lok>
        </fnt>;
      </ekz>
      <ekz>
        libertempuloj <klr>[&#8230;]</klr> plenigis la <tld/>ojn dum julio kaj
        a&ubreve;gusto
        <fnt><bib>Aventuroj</bib>, <lok>&ccirc;ap. 12a, p. 37a</lok></fnt>.
      </ekz>
    </dif>
    <ref tip="vid" cel="gast.0ejo">gastejo</ref>
    <trd lng="en">boarding house</trd>
    <trd lng="fr">pension<klr> (r&eacute;sidence)</klr></trd>
    <trdgrp lng="ru">
      <trd>&c_p;&c_a;&c_n;&c_s;&c_i;&c_o;&c_n;</trd>,
      <trd>&c_p;&c_a;&c_n;&c_s;&c_i;&c_o;&c_n;&c_a;&c_t;</trd>
    </trdgrp>
  </snc>
  <snc mrk="pensio.0o.lernanta">
    <dif>
      <tld lit="P"/>o<sncref ref="pensio.0o.gastejo"/> ebliganta
      al lernantoj lo&gcirc;i proksime de lernejo:
      <ekz>
        li kune iru al la eduk<tld/>o, tie ili &ccirc;iam studadis kune, sin ekzercadis en la
        latina lingvo
        <fnt>
          <bib>IdO</bib>
          <lok>Tria Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        en vesperoj kolekti&gcirc;is tie knaboj kaj knabinoj, lokaj kaj el la <tld/>o, por
        rajdi
        <fnt>
          <bib>InfanTorent2</bib>
          <lok>Dua Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        <nom>Mme Louise Zimmermann</nom>, direktorino de knabina
        <tld/>o en La&ubreve;zano
          <fnt><aut>Karel &Ccaron;apek, tr. Josef Vondrou&scaron;ek</aut>:
            <vrk>Milito kontra&ubreve; salamandroj</vrk>.
            <lok>Inko, 2003. Libro 2ª, &ccirc;ap. 2ª.</lok>
          </fnt>;
      </ekz>
      <ekz>
        temis pri knabo, sen gepatroj, en lerneja <tld/>o
        <fnt><aut>Julian Modest</aut>:
          <vrk>La miraklo de la parolo</vrk>.
          <bib>Monato</bib> <lok>&#8470; 011503</lok>
          </fnt>.
      </ekz>
    </dif>
    <rim>
      Alie ol &ccirc;e <refgrp tip="vid">
      <ref cel="intern.0ulejo">internulejo</ref> a&ubreve;
        <ref cel="lern.logx0ejo">lo&gcirc;lernejo</ref>
      </refgrp> 
      tia <tld/>o ne estas administrata de la lernejo, sed private
      disponigita al malgrandaj grupoj de lernantoj, ofte de instruistoj mem.
    </rim>    
    <trd lng="de">Sch&uuml;lerpension</trd>
    <trd lng="en">boarding school</trd>
    <trd lng="ru">&c_p;&c_a;&c_n;&c_s;&c_i;&c_o;&c_n;</trd>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_a;&c_n;&c_s;&c_ib;&c_jo;&c_n;</trd>,
    <trd>&c_p;&c_a;&c_n;&c_s;&c_ib;&c_ja;&c_n;&c_a;&c_t;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>penzi&oacute;n</trd>,
    <trd>ubytovna</trd>,
    <trd>&uacute;tulek</trd>
  </trdgrp>
  <trd lng="de">Pension</trd>
  <trd lng="hu">panzi&oacute;</trd>
  <trd lng="nl">pension</trd>
  <trd lng="pl">pensjonat</trd>
  <trd lng="ro">pension</trd>
  <trd lng="sk">penzi&oacute;n</trd>
  <trd lng="uk">&c_p;&c_a;&c_n;&c_s;&c_ib;&c_o;&c_n;</trd>
</drv>


<drv mrk="pensio.an0o">
  <kap><tld/>ano</kap>
  <snc mrk="pensio.0o.lernanto">
    <dif>
      Lernanto de <tld/>o<sncref ref="pensio.0o.lernejo"/>:
      <ekz>
        estis nesufi&ccirc;a la salajro, la hejmo devis malfermi&gcirc;i al dek kvin &gcirc;is dudek
        <tld/>anoj
        <fnt>
          <bib>VivZam</bib>
          <lok>Vivo de Zamenhof</lok>
        </fnt>;
      </ekz>
      <ekz>
        najbaroj, de kiuj oni petis konsilon, indikis samregionaninon, s-inon <nom>Kergaran</nom>,
        kiu akceptis <tld/>anojn
        <fnt>
          <bib>LOdE</bib>
          <lok>1999, No 1 (51)</lok>
        </fnt>;
      </ekz>
      <ekz>
        junaj <tld/>anoj plejofte dividas dormo&ccirc;ambron, dum pli
        maljunaj <tld/>anoj kutime havas siajn privatajn &ccirc;ambrojn 
        <fnt><vrk><url
 ref="https://educationplanetonline.com/eo/all-best-secondary-schools-in-uk/"
              >&Ccirc;iuj Plej bonaj mezlernejoj en Britio</url></vrk></fnt>;
      </ekz><ekz>
        du tagojn poste mi komencis instrui la <tld/>aninojn de la
        Sentema Mimozo
        <fnt><aut>Louis Beaucaire</aut>:
          <vrk>Kiel mi fari&gcirc;is kunfondinto de UEA</vrk>.
          <lok><url ref="https://sezonoj.ru/2020/01/beaucaire">LOdE</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        la pli junaj <tld/>anoj, nomis ilin la &leftquot;fratinoj <nom>Bront&euml;</nom>&rightquot;
        <fnt>
          <bib>Monato</bib>
          <aut>Albisturo Kvinke</aut>
          <vrk><url ref="https://www.monato.be/2012/010361.php"
              >Lisuarte</url></vrk>
          <lok>2012</lok>
        </fnt>.
      </ekz>
    </dif>
  <trd lng="de">Pensionssch&uuml;ler</trd>
  </snc>
  <trd lng="fr">pensionnaire</trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_a;&c_n;&c_s;&c_i;&c_o;&c_n;&c_je;&c_r;</trd>,
    <trd>&c_v;&c_o;&c_s;&c_p;&c_i;&c_t;&c_a;&c_n;&c_n;&c_i;&c_k; &c_p;&c_a;&c_n;&c_s;&c_i;&c_o;&c_n;&c_a;</trd>
  </trdgrp>
</drv>

<drv mrk="pensio.ul0o">
  <kap><tld/>ulo</kap>
  <snc mrk="pensio.0o.gastejano">
    <dif>
      Kliento de <tld/>o<sncref ref="pensio.0o.gastejo"/>:
      <ekz>
        &scirc;i devis pretigi la kafon, la teon kaj la man&gcirc;a&jcirc;on por multaj <tld/>uloj, kaj
        alportante ilin en la forluigitajn &ccirc;ambrojn, &scirc;i restis &ccirc;iam kelkan tempon
        <fnt>
          <bib>IdO</bib>
          <lok>Kvara Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        la mastrino lo&gcirc;is en la unua eta&gcirc;o <klr>[&#8230;]</klr> kvar bretonaj <tld/>uloj lo&gcirc;is
        en la tria kaj en la kvara
        <fnt>
          <bib>LOdE</bib>
          <lok>1999, No 1 (51)</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Pensionsgast</trd>
  <trd lng="fr">pensionnaire</trd>
  <trd lng="ru">&c_p;&c_a;&c_n;&c_s;&c_i;&c_o;&c_n;&c_je;&c_r;</trd>
</drv>

