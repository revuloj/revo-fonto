<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>kruel</rad>/a
</kap>
<drv mrk="kruel.0a">
  <kap>
    <ofc>*</ofc><tld/>a
  </kap>
  <snc>
    <uzo tip="klr">(iu)</uzo>
    <dif>
      Inklina suferigi, malhumana, turmentema:
      <ekz>
        <tld/>o besto, koro, tirano, dio;
      </ekz>
      <ekz>
        <tld/>a kiel tigro;
      </ekz>
      <ekz>
        <tld/>e frapi.
      </ekz>
    </dif>
    <trdgrp lng="de">
     <trd>grausam</trd>,
     <trd>unmenschlich</trd>
    </trdgrp>
  </snc>
  <snc>
    <uzo tip="klr">(io)</uzo>
    <dif>
      Suferiga, turmenta, doloriga, mal&gcirc;ojiga, aflikta:
      <ekz>
        <tld/>a vundo, doloro, ordono, sorto, insulto, perdo, morto,
        seniluzii&gcirc;o;
      </ekz>
      <ekz>
        la honoro estas ja bela, sed la laboro <tld/>a<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>e elrevigita;
      </ekz>
      <ekz>
        la <tld/>eco de l' fatalo.
      </ekz>
    </dif>
    <trdgrp lng="de">
     <trd>schlimm</trd>,
     <trd>hart</trd>
    </trdgrp>
  </snc>
  <trd lng="en">cruel</trd>
  <trd lng="ru">&c_zh;&c_je;&c_s;&c_t;&c_o;&c_k;&c_i;&c_j;</trd>
</drv>
</art>

