<kap>
  <rad>peon</rad>/o <fnt><bib>SPIV</bib></fnt>
</kap>

<drv mrk="peon1.0o">
  <kap><tld/>o</kap>
  <snc mrk="peon1.0o.AGR">
    <uzo tip="fak">AGR</uzo>
    <dif>
      Malri&ccirc;a <ref tip="super" cel="ter.0laboristo">terlaboristo</ref>,
      kiajn oni trovas en vastaj sudamerikaj bienoj:
      <ekz>
        la rellaboristoj, do <tld/>oj fu&gcirc;intaj en la ekzilon,
        donis duonon de sia mizera salajro
        <fnt>
          <aut>J. London, trad. D. Kaiser, F. Vohla, H.-G. Kaiser</aut>,
          <vrk>La meksikano</vrk>,
          <lok>2010</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="servut.0ulo">servutulo</ref>,
      <ref cel="sklav.0o">sklavo</ref>
    </refgrp>
  </snc>
  <ref tip="hom" cel="peon.0o">peono (&scirc;akpeco)</ref>
  <trd lng="be">&c_p;&c_e;&c_o;&c_n; <klr>(&c_s;&c_je;&c_l;&c_ja;&c_n;&c_ib;&c_n;)</klr></trd>
  <trd lng="de">Peon</trd>
  <trd lng="en">peon</trd>
  <trd lng="fr">p&eacute;on</trd>
  <trdgrp lng="ja">
    <trd>&#x30DD;&#x30FC;&#x30F3;</trd>,
    <trd>&#x6B69;&#20853;  <pr>&#x304B;&#12385;&#12356;&#x304F;&#12373;</pr></trd>,
    <trd>&#x8FB2;&#22580;&#x52B4;&#x50CD;&#32773;  <pr>&#x306E;&#12358;&#12376;&#12423;&#12358;&#x308D;&#12358;&#12393;&#12358;&#12375;&#12419;</pr></trd>,
    <trd>&#x30DA;&#x30AA;&#x30F3;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_p;&c_je;&c_o;&c_n; (&c_n;&c_a;&c_j;&c_m;&c_i;&c_t;)</trd>,
    <trd>&c_p;&c_ib;&c_sh;&c_a;&c_k; (&c_u; &c_sh;&c_a;&c_h;&c_a;&c_h;)</trd>,
    <trd>&c_sh;&c_a;&c_sh;&c_k;&c_a;</trd>
