<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
  <kap><ofc>*</ofc><rad>pardon</rad>/i</kap>

<drv mrk="pardon.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>x</vspec></gra>
  <snc num="1">
    <dif>
      Rezigni punon a&ubreve; ven&gcirc;on pro suferita 
      ofendo a&ubreve; maljusta&jcirc;o: 
      <ekz><tld/>i ion al iu;</ekz> 
      <ekz><tld/>i iun;</ekz> 
      <ekz>mi ne <tld/>as, ke vi malobeis;</ekz> 
      <ekz>ne<tld/>ebla krimo.</ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="indulg.0i">indulgi</ref>.
    </refgrp>
  </snc>
  <snc num="2">
    <dif>
      Toleri ion senkolere: 
      <ekz><tld/>u al mi, ke mi restis tiel longe<fnt>Z</fnt>;</ekz> 
      <ekz><tld/>u min, ke mi nur aludas tion<fnt>Z</fnt>;</ekz> 
      <ekz><tld/>u, ke mi &gcirc;is nun ne respondis vian leteron<fnt>Z</fnt>;</ekz> 
      <ekz><tld/>u, &ccirc;u vi volus doni al mi la salujon?</ekz>
    </dif>
  </snc>
    <trd lng="en">pardon</trd>
    <trdgrp lng="be">
      <trd>&c_d;&c_a;&c_r;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>, 
      <trd>&c_p;&c_r;&c_a;&c_b;&c_a;&c_ch;&c_a;&c_c;&c_mol;</trd>, 
      <trd>&c_v;&c_y;&c_b;&c_a;&c_ch;&c_a;&c_c;&c_mol;</trd>
    </trdgrp>
  <trdgrp lng="cs">
    <trd>prominout</trd>,
    <trd>odpustit</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>excuser</trd>, 
    <trd>pardonner</trd>
  </trdgrp>
  <trdgrp lng="lat">
    <trd>excuso, are</trd>; 
    <trd>ignosco, ere</trd>
  </trdgrp>
  <trd lng="nl">vergeven</trd>
</drv>

<drv mrk="pardon.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Ago <tld/>i: 
      <ekz>peti <tld/>on de iu.</ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_d;&c_a;&c_r;&c_a;&c_v;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>, 
    <trd>&c_p;&c_r;&c_a;&c_b;&c_a;&c_ch;&c_e;&c_n;&c_mol;&c_n;&c_je;</trd>
  </trdgrp>
  <trd lng="fr">pardon</trd>
  <trd lng="lat">uenia, ae</trd>
  <trd lng="nl">vergeving</trd>
</drv>

<drv mrk="pardon.0ema">
  <kap><tld/>ema</kap>
  <snc>
    <dif>
      Inklina al <tld/>o: 
      <ekz><tld/>emeco superas justecon<fnt>Z</fnt>.</ekz>  
    </dif>
  </snc>
  <trd lng="be">&c_d;&c_a;&c_r;&c_a;&c_v;&c_a;&c_l;&c_mol;&c_n;&c_y;</trd> 
  <trd lng="nl">vergevingsgezind</trd>
</drv>

</art>
