<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: negaci.xml,v 1.25 2024/01/29 15:21:35 revo Exp $">
<kap>
  <rad>negaci</rad>/o
  <fnt>Z</fnt>
</kap>
<drv mrk="negaci.0o">
  <kap><tld/>o</kap>
  <snc mrk="negaci.0o.GRA">
    <uzo tip="fak">GRA</uzo>
    <dif>
      Nea vorto.
    </dif>
    <trd lng="be">&c_a;&c_d;&c_m;&c_o;&c_w;&c_je;</trd>
    <trd lng="de">Verneinung</trd>
    <trd lng="es">negaci&oacute;n</trd>
    <trd lng="hu">tagad&oacute;sz&oacute;</trd>
    <trd lng="nl">negatie</trd>
    <trd lng="pl">przeczenie</trd>
    <trdgrp lng="pt">
      <trd>nega&ccedil;&atilde;o</trd>,
      <trd>palavra <klr tip="amb">negativa</klr></trd>
    </trdgrp>
    <trd lng="ru">&c_o;&c_t;&c_r;&c_i;&c_c;&c_a;&c_n;&c_i;&c_je;</trd>
  </snc>
  <snc mrk="negaci.0o.logika">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>MatStokTerm</bib><lok>p. 36</lok></fnt>
    <dif>
      <ref tip="super" cel="operac.logika0o">Logika operacio</ref>,
      kiu al <ref cel="propoz.0o.aserto">propozicio</ref>
      <frm am="P">P</frm> asocias la propozicion, kiu estas vera, 
      se kaj nur se <frm am="P">P</frm> estas falsa:
      <ekz>
        la <tld/>on de <frm am="P">P</frm> oni kutime signas per
        <frm am="neg P">&#xAC;P</frm> <klr> (legu: ne po)</klr>;
      </ekz>
      <ekz>
        la <tld/>o de propozicio 
        <ctl><frm am="a in bb A"><k>a</k>&#x2208;<g>A</g></frm></ctl> estas
        <ctl><frm am="a ne bb A"><k>a</k>&#x2209;<g>A</g></frm></ctl>;
      </ekz>
      <ekz>
        la <tld/>o de propozicio <frm am="P vv Q">P&#x2228;Q</frm> estas
        <frm am="neg P ^^ neg Q">&#xAC;P&#x2227;&#xAC;Q</frm> 
        <klr>(legu: ne po kaj ne kuo)</klr>.
      </ekz>
    </dif>
    <bld lok="../bld/t_negacio.svg" tip="svg" lrg="200" alt="200">
      vertabelo de <tld/>o
    </bld>
    <trd lng="be">
    &c_a;&c_d;&c_m;&c_a;&c_w;&c_l;&c_je;&c_n;&c_mol;&c_n;&c_je;</trd>
    <trd lng="de">Negation</trd>
    <trd lng="el">&alfa_ton;&rho;&ny;&eta;&sigma;&eta;</trd>
    <trd lng="en">negation</trd>
    <trd lng="fr">n&eacute;gation<klr tip="ind"> (logique)</klr></trd>
    <trd lng="hu">neg&aacute;ci&oacute;</trd>
    <trdgrp lng="pl">
      <trd>przeczenie</trd>,
      <trd>negacja</trd>
    </trdgrp> 
    <trd lng="pt">nega&ccedil;&atilde;o</trd>
    <trd lng="ru">
    <klr tip="ind">
    (&c_l;&c_o;&c_g;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_o;&c_je;)
    </klr>&c_o;&c_t;&c_r;&c_i;&c_c;&c_a;&c_n;&c_i;&c_je;
    </trd>
    <trdgrp lng="zh">
    <trd>&#x4E0D;&#x5B58;&#x5728; <pr>b&#xF9;c&#xFA;nz&#xE0;i</pr></trd>,
    <trd>&#x903B;&#x8F91;&#x975E; <pr>lu&#xF3;jif&#x113;i</pr></trd>,
    <trd>&#x908F;&#x8F2F;&#x975E; <pr>lu&#xF3;jif&#x113;i</pr></trd>
  </trdgrp>
</snc>
  <trdgrp lng="cs">
    <trd>negace</trd>,
    <trd>z&aacute;por</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x5426;&#x5B9A;  <pr>&#x3072;&#x3066;&#x3044;</pr></trd>,
    <trd>&#x5426;&#x8A8D;  <pr>&#x3072;&#x306B;&#x3093;</pr></trd>,
    <trd>&#x5426;&#x5B9A;&#x8A9E;  <pr>&#x3072;&#x3066;&#x3044;&#x3054;</pr></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>neg&aacute;cia</trd>,
    <trd>z&aacute;por</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x437;&#x430;&#x43F;&#x435;&#x440;&#x435;&#x447;&#x435;&#x43D;&#x43D;&#x44F;</trd>,
    <trd>&#x437;&#x430;&#x43F;&#x435;&#x440;&#x435;&#x447;&#x435;&#x43D;&#x43D;&#x44F;</trd>,
    <trd>&#x437;&#x430;&#x43F;&#x435;&#x440;&#x435;&#x447;&#x43D;&#x430; &#x447;&#x430;&#x441;&#x442;&#x43A;&#x430;</trd>,
    <trd>&#x437;&#x430;&#x43F;&#x435;&#x440;&#x435;&#x447;&#x43D;&#x438;&#x439; &#x437;&#x430;&#x439;&#x43C;&#x435;&#x43D;&#x43D;&#x438;&#x43A;</trd>,
    <trd>&#x437;&#x430;&#x43F;&#x435;&#x440;&#x435;&#x447;&#x43D;&#x435; &#x440;&#x435;&#x447;&#x435;&#x43D;&#x43D;&#x44F;</trd>
  </trdgrp>
</drv>
</art>
