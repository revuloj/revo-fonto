<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>afabl</rad>/a
</kap>
<drv mrk="afabl.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc>
    <dif>
      Pla&ccirc;a per &gcirc;entileco, bonakcepto, agrablaj vortoj, komplezo:
      <ekz>
        <tld/>a vorto pli atingas ol forto
        <fnt>
          (<aut>Zamenhof</aut>:
          <vrk>Proverbaro</vrk>)</fnt>;
      </ekz>
      <ekz>
        akcepti <tld/>e;
      </ekz>
      <ekz>
        rigardi mal<tld/>e
        <fnt>
          (<aut>Zamenhof</aut>:
          <vrk>Proverbaro</vrk>)</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">laskav&yacute;</trd>
  <trdgrp lng="de">
    <trd>freundlich</trd>,
    <trd>nett</trd>
  </trdgrp>
  <trd lng="en">affable</trd>
  <trd lng="it">affabile</trd>
</drv>
</art>
