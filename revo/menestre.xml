<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>menestrel</rad>/o <fnt><bib>PIV1</bib></fnt>,
  <var><kap><rad>minstrel</rad>/o <fnt><bib>PIV1</bib></fnt></kap></var>
</kap>
<drv mrk="menestre.0o">
  <kap><tld/>o, <var><kap>minstrelo</kap></var></kap>
  <snc mrk="menestre.0o.HIS">
    <uzo tip="fak">BELE</uzo>
    <uzo tip="fak">HIS</uzo>
    <uzo tip="fak">POE</uzo>
    <dif>
      Tradicia poet-muzikisto; mezepoka <ref tip="super" cel="kant.0isto.poeto">kantisto</ref> de poezio de
      trobadoroj, ofte ilia servanto:
      <ekz>
        &ccirc;i-nokte blinda bonzo-<tld/>o ludis bivon
        <fnt>
          <aut>Basyoo, trad. Sasaki T.</aut>,
          <vrk><url ref="http://members.jcom.home.ne.jp/verda/sasaki%20okunohosomiti.pdf">
          Streta vojo al fora interno</url></vrk>,
          <lok>[vidita en 2011]</lok>
        </fnt>;
      </ekz>  
      <ekz>
        li komencis travagi la najbara&jcirc;on kiel vaganta 
        minstrelo
        <fnt>
          <aut>Chun-Chan Yeh, trad. W. Auld</aut>,
          <vrk>Montara Vila&gcirc;o</vrk>,
          <lok>1984</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="aed.0o.HIS">aedo</ref>,
      <ref cel="bard.0o.HIS">bardo</ref>,
      <ref cel="rapsod.0o.HIS">rapsodo</ref>,
      <ref cel="skald.0o.HIS">skaldo</ref>,
      <ref cel="trobad.0o">trobadoro</ref>
    </refgrp>
    <bld
      lok="&WCU;/thumb/2/23/Jogral.jpg/300px-Jogral.jpg"
      prm="PD"
      ><tld/>oj en la 13a jc
        <fnt>
          <aut>Ganesh1, propra verko</aut>
          <lok><url ref="&WCW;/File:Jogral.jpg"
              >https://commons.wikimedia.org/wiki/File:Jogral.jpg</url></lok>
        </fnt>
    </bld>
  </snc>
  <trd lng="ca">joglar</trd>
  <trdgrp lng="cs">
    <trd>minesengr</trd>,
    <trd>minsterel</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Spielmann</trd>,
    <trd>M&eacute;n&eacute;trier</trd>,
    <trd>Minstrel</trd>,
    <trd>M&eacute;nestrel</trd>
  </trdgrp>
  <trd lng="fr">m&eacute;n&eacute;strel</trd>
  <trd lng="pl">minstrel</trd>
  <trd lng="sk">spev&aacute;k <klr>(stredovek&yacute;)</klr></trd>
</drv>
</art>

