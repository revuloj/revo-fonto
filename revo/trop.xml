<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: trop.xml,v 1.25 2023/10/21 14:37:42 revo Exp $">
<kap>
  <ofc>2</ofc>
  <rad>trop</rad>/o
</kap>
<drv mrk="trop.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">BELE</uzo>
  <uzo tip="fak">LIN</uzo>
  <snc>
    <dif>
      <ref tip="dif" cel="figur.stil0o">Stilfiguro</ref>, &ccirc;e kiu oni anstata&ubreve;as vorton per
      alia ne sinonima, ekz-e 
      <refgrp tip="sub">
        <ref cel="metafo.0o">metaforo</ref>, 
        <ref cel="ironi.0o">ironio</ref>,
        <ref cel="metonimi.0o">metonimio</ref>, 
        <ref cel="sinekdohx.0o">sinekdo&hcirc;o</ref>
      </refgrp>:
      <ekz>
        la verko konsistas precipe el ne plu uzataj vortoj kaj <tld/>oj, kune kun gaelaj esprimoj
        enirintaj la hibernoanglan
        <fnt>
          <bib>Monato</bib>
          <aut>Garbhan MacAoidh</aut>
          <vrk><url ref="&Monato;/2004/008202.html">Kaj je pa&gcirc;o 747 de aviadilega enciklopedio
          ...</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        li ofte uzis dialektajn vortojn kaj <tld/>ojn, kiuj ne estis kutimaj krom en malgranda
        regiono en okcidenta Irlando
        <fnt>
          <bib>Monato</bib>
          <aut>Garbhan MacAoidh</aut>
          <vrk><url ref="&Monato;/2007/009181.php">Nekonata genio</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        jen 43 artikoloj diverse longaj <klr>[&#x2026;]</klr> kiuj parolas i.a. pri etimologio,
        leksiko, homonimeco, interpunkcio, verbo-tensoj, <tld/>oj, supersignoj, landnomoj,
        neologismoj, <klr>[&#x2026;]</klr>
        <fnt>
          <bib>Monato</bib>
          <aut>Antonio Val&eacute;n</aut>
          <vrk><url ref="&Monato;/2005/008625.php">Klero kaj klaro delektos la leganton</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        liaj <tld/>oj foje forlasas la limojn de la prudento
        <fnt>
          <bib>Monato</bib>
          <aut>Geraldo Mattos</aut>
          <vrk><url ref="&Monato;/2008/009422.php">Rezulto de preseraro</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        solvi dubojn pri subtila&jcirc;oj de la <tld/>oj kaj idioma&jcirc;oj de la itala
        <fnt>
          <bib>Monato</bib>
          <aut>Garvan Makaj'</aut>
          <vrk><url ref="&Monato;/2014/011154.php">Kerno de la itala lingvo</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_t;&c_r;&c_o;&c_p;</trd>
  <trd lng="ca">trop</trd>
  <trdgrp lng="cs">
    <trd>tropus</trd>,
    <trd>z&aacute;stupka</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Trope</trd>,
    <trd>bildlicher Ausdruck</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>trope</trd>,
    <trd>figure of speech</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>figure de style</trd>,
    <trd>trope</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>sz&oacute;k&eacute;p</trd>,
    <trd>k&eacute;pes kifejez&eacute;s</trd>,
    <trd>tr&oacute;pus</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x8A00;&#x8449;&#x306E;&#x3042;&#x3084;  <pr>&#x3053;&#x3068;&#x3070;&#x306E;&#x3042;&#x3084;</pr></trd>,
    <trd>&#x8EE2;&#x7528;  <pr>&#x3066;&#x3093;&#x3088;&#x3046;</pr></trd>,
    <trd>&#x6BD4;&#x55A9;  <pr>&#x3072;&#x3086;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>troop</trd>,
    <trd>stijlfiguur</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>trop<klr tip="amb"> (literacki)</klr></trd>,
    <trd>przeno&sacute;nia</trd>
  </trdgrp>
  <trd lng="pt">tropo</trd>
  <trdgrp lng="ru">
    <trd>&c_t;&c_r;&c_o;&c_p;</trd>,
    <trd>&c_p;&c_je;&c_r;&c_je;&c_n;&c_o;&c_s;&c_n;&c_o;&c_je;
    &c_z;&c_n;&c_a;&c_ch;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>metafora</trd>,
    <trd>tr&oacute;p</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_t;&c_r;&#x43E;&#x43F;</trd>,
    <trd>&c_s;&#x43B;&#x43E;&c_v;&#x43E; &c_v; &#x43F;&c_je;&c_r;&c_je;&#x43D;&#x43E;&c_s;&#x43D;&#x43E;&#x43C;&c_u;
    &c_z;&#x43D;&c_a;&c_ch;&c_je;&#x43D;&#x43D;&c_ib;</trd>
  </trdgrp>
</drv>
</art>
