    <trd>&#x97F5;&#25991; <pr>y&#xF9;nw&#xE9;n</pr></trd>,
    <trd>&#x97FB;&#25991; <pr>y&#xF9;nw&#xE9;n</pr></trd>,
    <trd>&#x8A69;&#x6B4C; <pr>sh&#x12B;g&emacron;</pr></trd>,
    <trd>&#x8BD7;&#x6B4C; <pr>sh&#x12B;g&emacron;</pr></trd>,
    <trd>&#29992;&#x8A69;&#34920;&#36948; <pr>y&#xF2;ngsh&#x12B;bi&#x1CE;od&#xE1;</pr></trd>,
    <trd>&#29992;&#x8BD7;&#34920;&#x8FBE; <pr>y&#xF2;ngsh&#x12B;bi&#x1CE;od&#xE1;</pr></trd>,
    <trd>&#x980C;&#x8A5E; <pr>s&#xF2;ngc&#xED;</pr></trd>,
