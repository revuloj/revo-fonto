  <trd lng="it">Zamenhof</trd>
  <trd lng="ja">&#x30B6;&#x30E1;&#x30F3;&#x30DB;&#x30D5; [<ind>&#12374;&#12417;&#12435;&#x307B;&#12405;</ind>]</trd>
  <trd lng="ko">&#xC790;&#xBA58;&#xD638;&#xD504;</trd>
  <trd lng="mr">&#x91D;&#x93E;&#x92E;&#2375;&#2344;&#2361;&#2377;&#x92B;</trd>
