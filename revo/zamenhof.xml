  <trd lng="uk">&c_Z;&c_a;&#x43C;&c_je;&#x43D;&c_g;&#x43E;&c_f; (&c_t;&c_v;&#x43E;&c_r;&c_je;&c_c;&#x44C; &c_je;&c_s;&#x43F;&c_je;&c_r;&c_a;&#x43D;&c_t;&#x43E;)</trd>
  <trd lng="uz">Zamengof</trd>
  <trd lng="yi">&zayin;&alef;&mem;&ayin;&nun;&he;&alef;&fpe;</trd>
  <trd lng="zh">&#x67F4;&#x95E8;&#x970D;&#x592B; [<ind>Ch&aacute;im&eacute;nhu&ograve;f&umacron;</ind>]</trd>
</drv>

<drv mrk="zamenhof.0a">
  <kap><tld/>a</kap>
  <snc mrk="zamenhof.0a.PERS">
    <dif>
      Rilata al la persono kaj agado de <tld lit="Z"/>o,
      a&ubreve; kongrua kun ties lingvaj rekomendoj kaj ekzemploj:
      <ekz>
        cetere, mi rimarkis ke ofte la plej sukoplenaj parolturnoj estas
        <tld/>aj
        <fnt><aut>Stefan Maul</aut>: <vrk>Miloj da parolturnoj</vrk>,
        <bib>Monato</bib><lok>jaro 1996a, numero 2a, p. 23a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_z;&c_a;&c_m;&c_e;&c_n;&c_g;&c_o;&c_f;&c_a;&c_w;</trd>
  <trdgrp lng="ca">
    <trd>de Zamenhof</trd>,
    <trd>zamenhofi&agrave;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Samenhofisch</trd>,
    <trd>Samenhof'sch</trd>,
    <trd>Samenhof's</trd>
  </trdgrp>
  <trd lng="hu">zamenhofi</trd>
  <trd lng="it">di <ind>Zamenhof</ind></trd>
  <trd lng="pt">de <ind>Zamenhof</ind><klr tip="ind"> (adj.)</klr></trd>
  <trdgrp lng="ru">
    <trd>&c_z;&c_a;&c_m;&c_je;&c_n;&c_g;&c_o;&c_f;&c_o;&c_v;</trd>,
    <trd>&c_z;&c_a;&c_m;&c_je;&c_n;&c_g;&c_o;&c_f;&c_s;&c_k;&c_i;&c_j;</trd>,
    <trd>&c_z;&c_a;&c_m;&c_je;&c_n;&c_g;&c_o;&c_f;&c_o;&c_v;&c_s;&c_k;&c_i;&c_j;</trd>
  </trdgrp>
</drv>
