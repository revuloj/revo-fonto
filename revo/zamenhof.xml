  <trd lng="ru"><klr tip="amb">(&c_L;&c_a;&c_z;&c_a;&c_r;&c_mol; &c_M;&c_a;&c_r;&c_k;&c_o;&c_v;&c_i;&c_ch;) </klr>&c_Z;&c_a;&c_m;&c_je;&c_n;&c_g;&c_o;&c_f;</trd>
  <trd lng="si">&#xDC3;&#xDCF;&#xDB8;&#xDD9;&#xDB1;&#xDCA;&#xDC4;&#xDDC;&#xDC6;&#xDCA;</trd>
