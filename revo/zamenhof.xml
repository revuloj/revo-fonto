  <trd lng="ja">&#12470;&#12513;&#12531;&#12507;&#12501; <pr>&#12374;&#12417;&#12435;&#12411;&#12405;</pr></trd>
  <trd lng="ko">&#51088;&#47704;&#54840;&#54532;</trd>
  <trd lng="mr">&#2333;&#2366;&#2350;&#2375;&#2344;&#2361;&#2377;&#2347;</trd>
  <trd lng="lt">Zamenhofas</trd>
  <trd lng="lv">Z&amacron;menhofs</trd>
