  <trd lng="uk">&c_Z;&c_a;&c_m;&c_je;&c_n;&c_g;&c_o;&c_f; (&c_t;&c_v;&c_o;&c_r;&c_je;&c_c;&c_mol; &c_je;&c_s;&c_p;&c_je;&c_r;&c_a;&c_n;&c_t;&c_o;)</trd>
  <trd lng="uz">Zamengof</trd>
