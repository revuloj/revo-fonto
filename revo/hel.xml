<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>hel</rad>/a
</kap>
<drv mrk="hel.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc>
    <dif>
      Donanta a&ubreve; ricevanta vivan lumon, tre luma, lumplena:
      <ekz>
        <tld/>a fajro<fnt>B</fnt>,
      </ekz>
      <ekz>
        &ccirc;ielo, vetero, tago<fnt>B</fnt>;
      </ekz>
      <ekz>
        <tld/>a &ccirc;ambro;
      </ekz>
      <ekz>
        la varma kaj <tld/>a radio de l' suno;
      </ekz>
      <ekz>
        sur la <tld/>a fono lumigata de la lampo aperis<fnt>B</fnt>...;
      </ekz>
      <ekz>
        la steloj <tld/>e lumis<fnt>Z</fnt>
        <fnt>(<aut>Prus, trad. Kabe</aut>: <vrk>La Faraono, 2a vol.</vrk>,
        <lok>&ccirc;ap. 1</lok>)</fnt>;
      </ekz>
      <ekz>
        <ind>mal<tld/>a</ind> arbaro, muro, karcero, nokto, vetero.
        <trdgrp lng="fr">
          <trd>sombre</trd>,
          <trd>fonc&eacute;</trd>,
          <trd>obscur</trd>,
          <trd>sinistre</trd>
        </trdgrp>
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="seren.0a">serena</ref>,
      <ref cel="bril">brila</ref>,
      <ref cel="lum.0a">luma</ref>,
      <ref cel="klar.0a">klara 1</ref>.
    </refgrp>
    <trd lng="nl">helder</trd>
  </snc>
  <snc>
    <dif>
      Lume kolorigita, vivkolora, pli proksima al blanko ol al nigro:
      <ekz>
        <tld/>a, mal<tld/>a ru&gcirc;o;
      </ekz>
      <ekz>
        la <tld/>e blua &ccirc;ielo;
      </ekz>
      <ekz>
        mal<tld/>e oraj haroj.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="pal.0a">pala</ref>.
    </refgrp>
    <trd lng="nl">licht<klr tip="ind"> (helder)</klr></trd>
  </snc>
  <snc>
    <uzo tip="stl">FIG</uzo>
    <dif>
      La&ubreve;te, brile sonora:
      <ekz>
        la la&ubreve;ta, <tld/>a vo&ccirc;o de la koko<fnt>B</fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="klar.0a">klara 2</ref>
    <trd lng="nl">helder</trd>
  </snc>
  <trd lng="cs">sv&ecaron;tl&yacute;</trd>
  <trd lng="de">hell</trd>
  <trd lng="en">bright</trd>
  <trdgrp lng="fr">
    <trd>clair<klr tip="ind"> (lumineux)</klr></trd>,
    <trd>&eacute;clair&eacute;<klr tip="ind"> (lumineux)</klr></trd>,
    <trd>lumineux</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_s;&c_v;&c_je;&c_t;&c_l;&c_y;&c_j;</trd>,
    <trd>&c_ja;&c_s;&c_n;&c_y;&c_j;</trd>,
    <trd>&c_ja;&c_r;&c_k;&c_i;&c_j;</trd>
  </trdgrp>
</drv>

<drv mrk="hel.0eco">
  <kap><tld/>eco</kap>
  <snc>
    <dif>
      Eco de io <tld/>a:
      <ekz>
        ni havas <tld/>econ nokte, kiam brilas luno<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Helligkeit</trd>
  <trdgrp lng="fr">
    <trd>luminosit&eacute;</trd>,
    <trd>clart&eacute;<klr tip="ind"> (luminosit&eacute;)</klr></trd>,
    <trd>lumi&egrave;re<klr tip="ind"> (luminosit&eacute;)</klr></trd>
  </trdgrp>
  <trd lng="nl">helderheid</trd>
  <trd lng="ru">&c_ja;&c_r;&c_k;&c_o;&c_s;&c_t;&c_mol;</trd>
</drv>

<drv mrk="hel.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <dif>
      Igi ion <tld/>a:
      <ekz>
        la lampo <tld/>igas la &ccirc;ambron;
      </ekz>
      <ekz>
        dis<tld/>igu la fajron<fnt>Z</fnt>
        <klr>(igu <tld/>a ekscitante &gcirc;in)</klr>;
      </ekz>
      <ekz>
        <tld/>igi fotografa&jcirc;on per bano;
      </ekz>
      <ekz>
        tiu sciigo <ind>mal<tld/>igi</ind>s la &gcirc;ojan feston.
        <trd lng="fr">assombrir</trd>
      </ekz>
    </dif>
  </snc>
  <trd lng="de">erhellen</trd>
  <trd lng="nl">verlichten</trd>
  <trdgrp lng="fr">
    <trd>&eacute;clairer</trd>,
    <trd>&eacute;claircir</trd>,
    <trd>illuminer</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_o;&c_s;&c_v;&c_je;&c_t;&c_l;&c_ja;&c_t;&c_mol;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_ja;&c_s;&c_n;&c_ja;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="hel.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc>
    <dif>
      I&gcirc;i <tld/>a:
      <ekz>
        la vetero <tld/>i&gcirc;as;
      </ekz>
      <ekz>
        lia zorgoplena viza&gcirc;o <tld/>i&gcirc;is;
      </ekz>
      <ekz>
        mal<tld/>i&gcirc;inta koloro.
      </ekz>
    </dif>
    <rim>
      La esenca senco de <em>hela</em> estas la lumeco, tiu de
      <em>klara</em>
      estas la distingebleco; tial oni ne uzas <em>hela</em> pri la penso
      a&ubreve; spirito.
    </rim>
  </snc>
  <trdgrp lng="fr">
    <trd>s'<ind>&eacute;clairer</ind></trd>,
    <trd>s'<ind>&eacute;claircir</ind></trd>,
    <trd>s'<ind>illuminer</ind></trd>
  </trdgrp>
  <trd lng="nl">opklaren</trd>
</drv>
</art>
