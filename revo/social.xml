     <trd>maatschappelijk</trd>
   </trdgrp>
  <trd lng="ru">&c_s;&c_o;&c_c;&c_i;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
  <trd lng="sk">soci&#xE1;lny</trd>
  <trdgrp lng="uk">
    <trd>&#x441;&#x43E;&#x446;&#x456;&#x430;&#x43B;&#x44C;&#x43D;&#x438;&#x439;</trd>,
    <trd>&#x441;&#x443;&#x441;&#x43F;&#x456;&#x43B;&#x44C;&#x43D;&#x438;&#x439;</trd>
  </trdgrp>
</drv>

<drv mrk="social.0ismo">
   <kap><tld/>ismo</kap>
   <snc mrk="social.0ismo.POL">
     <uzo tip="fak">POL</uzo>
    <dif>
      Doktrino, kiu taskas al politikaj a&ubreve;toritatoj
      zorgon pri <tld/>aj aferoj,
      interalie gvidon de ekonomio por la komuna bono:
      <ekz>
        en 1917, kiel estas konate, la <tld/>isman movadon kaj la 
        tutan mondon skuis la preno de la povo en Rusio fare de 
        radikala <tld/>ista partio, la bol&scirc;evika
        <fnt>
          <aut>T. del Barrio</aut>,
          <vrk><url ref="http://www.delbarrio.eu/gracia.htm">
          Juan Gracia...</url></vrk>,
          <lok>[vidita en 2010]</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="ant" cel="kredit.0social">sociala kredito</ref>
