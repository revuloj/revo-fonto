  <trd lng="be">&c_c;&c_mol;&c_v;&c_ja;&c_r;&c_o;&c_z;&c_y;</trd>
  <trd lng="ca">sobri</trd>
  <trdgrp lng="cs">
    <trd>st&rcaron;&iacute;dm&yacute;</trd>,
    <trd>st&rcaron;&iacute;zliv&yacute;</trd>,
    <trd>zdr&zcaron;enliv&yacute;</trd>
  </trdgrp>
  <trd lng="de">n&uuml;chtern</trd>
  <trd lng="en">sober</trd>
  <trd lng="es">sobrio, -a</trd>
  <trd lng="fr">sobre</trd>
  <trd lng="hu">j&oacute;zan</trd>
  <trdgrp lng="ja">
    <trd>&#x7BC0;&#21046;&#12375;&#x305F;  <pr>&#x305B;&#12387;&#x305B;&#12356;&#12375;&#x305F;</pr></trd>,
    <trd>&#12375;&#12425;&#12405;&#x306E;</trd>,
    <trd>&#x7BC0;&#x5EA6;&#12354;&#x308B;  <pr>&#x305B;&#12388;&#12393;&#12354;&#x308B;</pr></trd>,
    <trd>&#x843D;&#12385;&#30528;&#12356;&#x305F;  <pr>&#x304A;&#12385;&#12388;&#12356;&#x305F;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>nuchter</trd>,
    <trd>sober</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>wstrzemi&eogonek;&zacute;liwy</trd>,
    <trd>bez  <ind>pasji</ind></trd>
  </trdgrp>
  <trd lng="ru">&c_t;&c_r;&c_je;&c_z;&c_v;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>striezliv&yacute;</trd>,
    <trd>triezvy</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_t;&c_v;&c_je;&c_r;&c_je;&c_z;&c_i;&c_j;</trd>,
    <trd>&c_p;&c_o;&c_m;&c_ib;&c_r;&c_k;&c_o;&c_v;&c_a;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_s;&c_t;&c_r;&c_i;&c_m;&c_a;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_z;&c_d;&c_je;&c_r;&c_zh;&c_a;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_r;&c_o;&c_z;&c_s;&c_u;&c_d;&c_l;&c_i;&c_v;&c_i;&c_j;</trd>,
    <trd>&c_r;&c_o;&c_z;&c_v;&c_a;&c_zh;&c_l;&c_i;&c_v;&c_i;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x6E05;&#37266; <pr>q&#x12B;ngx&#x1D0;ng</pr></trd>,
    <trd>&#x6C92;&#26377;&#x611F;&#x60C5; <pr>m&#xE9;iy&#x1D2;ug&#x1CE;nq&#xED;ng</pr></trd>,
    <trd>&#x6CA1;&#26377;&#x611F;&#x60C5; <pr>m&#xE9;iy&#x1D2;ug&#x1CE;nq&#xED;ng</pr></trd>
  </trdgrp>
</drv>

<drv mrk="sobr.mal0a">
  <kap><ofc>*</ofc>mal<tld/>a</kap>
  <snc mrk="sobr.mal0a.dibocxinta">
    <dif>
     Nemodere man&gcirc;anta a&ubreve; trinkanta:
      <ekz>
        bruna senforma mal<tld/>a viza&gcirc;o, sur kiu ankora&ubreve; restis signoj
        de anta&ubreve;a beleco <klr>[&#8230;]</klr> la okuloj estis ru&gcirc;aj <klr>[&#8230;]</klr>
        per unu vorto, jam la&ubreve; la sola ekstera&jcirc;o de la vila&gcirc;ano oni povis
        ju&gcirc;i pri la dibo&ccirc;a vivo, kiun li kondukis
        <fnt>
          <bib>FK</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
       <ref cel="dibocx.0i">dibo&ccirc;i</ref>,
       <ref cel="sat.0a">sata</ref>
    </refgrp>
    <trd lng="be">&c_n;&c_ja;&c_s;&c_t;&c_r;&c_y;&c_m;&c_a;&c_n;&c_y; <klr>(&c_u; &c_p;&c_ib;&c_t;&c_v;&c_je;, &c_je;&c_zh;&c_y;)</klr></trd>
    <trdgrp lng="de">
      <trd>voll <klr>(nicht n&uuml;chtern)</klr></trd>,
      <trd>feist</trd>
    </trdgrp>
    <trd lng="fr">goinfre</trd>
    <trd lng="nl">niet <ind>nuchter</ind></trd>
    <trdgrp lng="pl">
      <trd>pe&lstroke;ny</trd>,
      <trd>ob&zdot;arty</trd>
    </trdgrp>
  </snc>
  <snc mrk="sobr.mal0a.ebria">
    <dif>
      Sub influo de alkoholo:
      <ekz>
        li tie estis en mal<tld/>a stato, li tie sin batadis kun kolegoj
        <fnt>
          <bib>Hamlet</bib>
        </fnt>;
      </ekz>
      <ekz>
        ha, mi <klr>[&#8230;]</klr> granda mal<tld/>ulo <klr>[&#8230;]</klr>
        jen kion ka&ubreve;zis al mi la drinkado
        <fnt>
          <bib>FK</bib>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="ebri.0a">ebria</ref>
    <ref tip="vid" cel="drink.0i">drinkinta</ref>
    <trdgrp lng="be">
      <trd>&c_p;&#8217;&c_ja;&c_n;&c_y;</trd>,
      <trd>&c_a;&c_p;&#8217;&c_ja;&c_n;&c_je;&c_l;&c_y;</trd>
    </trdgrp>
    <trd lng="de">betrunken</trd>
    <trd lng="en">drunk</trd>
    <trd lng="fr">ivre</trd>
    <trd lng="nl">dronken</trd>
    <trdgrp lng="pl">
      <trd>pijany</trd>,
      <trd>nietrze&zacute;wy</trd>
    </trdgrp>
    <trdgrp lng="zh">
    <trd>&#37257;&#37202; <pr>zu&#xEC;ji&#x1D4;</pr></trd>,
    <trd>&#37207; <pr>x&#xF9;</pr></trd>,
    <trd>&#37202;&#37257; <pr>ji&#x1D4;zu&#xEC;</pr></trd>,
    <trd>&#x559D;&#37257; <pr>h&emacron;zu&#xEC;</pr></trd>
  </trdgrp>
</snc>
  <trd lng="fr">intemp&eacute;rant</trd>
  <trdgrp lng="ja">
    <trd>&#x4E0D;&#x7BC0;&#21046;&#x306E;  <pr>&#12405;&#x305B;&#12387;&#x305B;&#12356;&#x306E;</pr></trd>,
    <trd>&#x66B4;&#x98F2;&#x66B4;&#x98DF;&#x306E;
    <pr>&#x307C;&#12358;&#12356;&#12435;&#x307C;&#12358;&#12375;&#12423;&#x304F;&#x306E;</pr></trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_n;&c_je;&c_p;&c_o;&c_m;&c_ib;&c_r;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_n;&c_a;&c_d;&c_m;&c_ib;&c_r;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_n;&c_je;&c_z;&c_d;&c_je;&c_r;&c_zh;&c_l;&c_i;&c_v;&c_i;&c_j;</trd>,
    <trd>&c_r;&c_o;&c_z;&c_g;&c_u;&c_l;&c_mol;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_g;&c_u;&c_l;&c_ja;&c_shch;&c_i;&c_j;</trd>,
    <trd>&c_n;&c_je;&c_t;&c_v;&c_je;&c_r;&c_je;&c_z;&c_i;&c_j;</trd>,
    <trd>&c_p;&#8217;&c_ja;&c_n;&c_i;&c_j;</trd>
  </trdgrp>
</drv>

<drv mrk="sobr.0igi">
  <kap><tld/>igi</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="sobr.0igi.KOMUNE">
    <dif>
      Rekonduki al <tld/>eco:
      <ekz>
        la prema varmo iom <tld/>igis ilin
        <fnt>
          <aut>E. Turner, trad. R. McGrath</aut>
          <vrk><url ref="https://eduinf.waw.pl/esp/lern/librejo/0144/0001.php">Sep Junaj
          A&ubreve;stralianoj</url></vrk>
          <lok>1994</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>d&eacute;griser</trd>,
    <trd>d&eacute;ssouler<klr> (tr.)</klr></trd>
  </trdgrp>
</drv>

<drv mrk="sobr.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="sobr.0igxi.KOMUNE">
    <dif>
      Moderi&gcirc;i, eviti ebriecon, eksceson, troigon, patoson...:
      <ekz>
        la fino de &ccirc;io alproksimi&gcirc;as, prudenti&gcirc;u do, kaj <tld/>i&gcirc;u por pre&gcirc;oj
        <fnt>
          <bib>NT</bib>
          <lok>&Pe1; 4:7</lok>
        </fnt>;
      </ekz>
      <ekz>
        tiu, kiu vivis sendiscipline, sed poste <tld/>i&gcirc;is, briligas la
        mondon kiel la luno libera de nuboj
        <fnt><aut>trad. T. T. Anuruddha</aut> <vrk>La Vojo al Nirvano
        a&ubreve; la Dhammapado, 13:172</vrk> <lok>1973</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>sich <ind>bescheiden</ind></trd>,
      <trd>ausn&uuml;chtern</trd>,
      <trd><ind>Verzicht</ind> &uuml;ben</trd>
    </trdgrp>
  </snc>
  <trd lng="be">&c_c;&c_v;&c_je;&c_r;&c_a;&c_z;&c_je;&c_c;&c_mol;</trd>
  <trdgrp lng="ca">
    <trd>moderar-se</trd>,
    <trd>abstenir-se</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>se <ind>d&eacute;griser</ind></trd>,
    <trd>dessouler<klr> (intr.)</klr></trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#37204;&#12356;&#x304C;&#12373;&#12417;&#x308B;  <pr>&#12424;&#12356;&#x304C;&#12373;&#12417;&#x308B;</pr></trd>,
    <trd>&#x843D;&#12385;&#30528;&#x304F;  <pr>&#x304A;&#12385;&#12388;&#x304F;</pr></trd>
  </trdgrp>
  <trd lng="nl">ontnuchteren</trd>
  <trd lng="pl">wytrze&zacute;wie&cacute;</trd>
  <trd lng="uk">&c_t;&c_v;&c_je;&c_r;&c_je;&c_z;&c_ib;&c_t;&c_i;</trd>
</drv>
