<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>lir</rad>/o
</kap>
<drv mrk="lir.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="lir.0o.MUZ">
    <uzo tip="fak">MUZ</uzo>
    <dif>
      Iu el diversaj
      <ref tip="super" cel="instru2.kord0o">kordinstrumentoj</ref>
      kun sonkesto, du ortaj stangoj supre kunigitaj
      per transversa stango, kaj kordoj fiksitaj
      inter la sonkesto kaj la transverso;
      ofta simbolo de poezio;
      komparu kun
      <ref tip="vid" cel="citr.0o.MUZ">citroj</ref>,
      <ref tip="vid" cel="harp.0o">harpoj</ref>,
      <ref tip="vid" cel="liut.0o">liutoj</ref>:
      <ekz>
        <ctl>Sub la signo de <tld/>o kaj verda stelo</ctl>
        <fnt>titolo de verko de <aut>M. Abolskaja</aut>: <lok>Moskvo:
        Impeto, 1999.</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>Leier</trd>,
      <trd>Lyra</trd>
    </trdgrp>
    <trd lng="el">&lambda;&ypsilon_ton;&rho;&alfa;</trd>
    <trd lng="en">lyre</trd>
    <trdgrp lng="fr">
      <trd>lyre</trd>
    </trdgrp>
    <trd lng="nl">lier</trd>
  </snc>
  <snc mrk="lir.0o.monunuo">
    <uzo tip="fak">EKON</uzo>
    <dif>
      Iama itala <ref tip="super" cel="unu.mon0o">monunuo</ref>,
      samvalora kun 100 centimojn:
      <ekz>
        la patra letero anoncis dungi&gcirc;on kaj &gcirc;uste po&scirc;tmandaton je kvin
        <tld/>oj<fnt><aut>Armando Zecchin</aut>: <vrk>La kokino de nia
        najbarino</vrk>, <bib>Monato</bib><lok>jaro 1999a, numero 3a, p.
        27a</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="de">
      <trd>Lire</trd>,
      <trd>Lira</trd>
    </trdgrp>
    <trd lng="el">&lambda;&jota;&rho;&epsilon_ton;&tau;&tau;&alfa;</trd>
    <trd lng="en">lira</trd>
    <trdgrp lng="fr">
      <trd>lire</trd>
    </trdgrp>
    <trd lng="nl">lira</trd>
  </snc>
  <trd lng="be">&c_l;&c_ib;&c_r;&c_a;</trd>
  <trd lng="es">lira</trd>
  <trd lng="pt">lira</trd>
  <trd lng="ru">&c_l;&c_i;&c_r;&c_a;</trd>
</drv>

<drv mrk="lir.0ismo">
  <kap><tld/>ismo</kap>
  <uzo tip="fak">POE</uzo>
  <snc>
    <dif>
      Poezia inspiro.
    </dif>
    <refgrp tip="vid">
      <ref cel="lirik.0a">lirika</ref>
    </refgrp>
  </snc>
  <trd lng="el">&lambda;&ypsilon;&rho;&jota;&sigma;&my;&omikron_ton;&sigma_fina;</trd>
  <trdgrp lng="fr">
    <trd>lyrisme</trd>
  </trdgrp>
  <trd lng="be">&c_l;&c_ib;&c_r;&c_y;&c_z;&c_m;</trd>
  <trd lng="nl">lyrisme</trd>
  <trd lng="pt">lirismo</trd>
  <trd lng="ru">&c_l;&c_i;&c_r;&c_i;&c_z;&c_m;</trd>
</drv>
</art>
