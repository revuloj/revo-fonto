<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>diligent</rad>/a
</kap>
<drv mrk="dilige.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc>
    <dif>
      Konstante k zorge laborema:
      <ekz>
        <tld/>a lernanto;
      </ekz>
      <ekz>
        nia <tld/>a kolegaro ne laci&gcirc;os en laboro
        paca<fnt>Z</fnt>;
      </ekz>
      <ekz>
        mal<tld/>a mano  malri&ccirc;i&gcirc;as
        <fnt>(<aut>Zamenhof</aut>: <vrk>Malnova testamento</vrk>,
        <lok>Sentencoj 10, 4</lok>)</fnt>;
      </ekz>
      <ekz>
        <tld/>e atenti la a&ubreve;dita&jcirc;ojn
        <fnt>(<vrk>Nova testamento</vrk>,
        <lok>Hebreoj 2, 1</lok>)</fnt>;
      </ekz>
      <ekz>
        ili <tld/>e pasis la noktojn en gaja festenado<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la horoj treni&gcirc;as mal<tld/>e;
      </ekz>
      <ekz>
        la ondoj malforti&gcirc;is k fari&gcirc;is kvaza&ubreve;
        mal<tld/>aj<fnt>B</fnt>.
      </ekz> 
    </dif>
    <refgrp tip="sin">
      <ref cel="ag">agema</ref>,
      <ref cel="fervor">fervora</ref>,
      <ref cel="zorg">zorgema</ref>,
      <ref cel="atent.0a">atenta</ref>.
    </refgrp>
    <refgrp tip="vid">
      <ref cel="abel.0o">abelo</ref>,
      <ref cel="formik.0o">formiko</ref>.
    </refgrp>
   </snc>
   <trd lng="cs">piln&yacute;</trd>
   <trd lng="de">flei&szlig;ig</trd>
</drv>
</art>
