<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
  <art mrk="$Id: heuxristik.xml,v 1.4 2022/10/12 19:35:47 afido Exp $">
    <kap>
      <rad>he&ubreve;ristik</rad>/o
    </kap>

<drv mrk="heuxristik.0o">
  <kap><tld/>o</kap>
  <snc>
  <uzo tip="fak">SCI</uzo>
    <dif>
      <ref tip="super" cel="metod.0o">Metodo</ref> aplikanta <ref
      cel="simpl.0igi">simpligitan</ref>, 
      neoptimuman solvon surbaze de sperto, sen teoria bazo:
      <ekz>
        la&ubreve; la <tld/>o &ccirc;iu milimetro, per kiu la okulglobo estas pli longa, aldonas tri
        dioptriojn al la refrakcio
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=226902">Miopeco</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        matematikistoj kredas ke la konjekto estas vera, baz<klr>[e de]</klr> <tld/>o
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=105731">Konjekto pri &gcirc;emelaj
          primoj</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        sendube vi <tld/>as, karega <nom>Em&egrave;ric</nom>, ke mi verkis nenion por la <nom>Serta
        Gratulatoria</nom>, kvankam la honoroto petis min kontribui
        <fnt>
          <bib>MMa</bib>
          <lok>&Ccirc;apitro 5</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="aproks.0o">aproksimo</ref>,
      <ref cel="empiri.0o">empirio</ref>,
      <ref cel="improv.0ajxo">improviza&jcirc;o</ref>,
      <ref cel="pragma.0ismo">pragmatismo</ref>      
    </refgrp>
    <trd lng="be">&c_e;&c_w;&c_r;&c_y;&c_s;&c_t;&c_y;&c_k;&c_a;</trd>
    <trdgrp lng="de">
      <trd>Heuristik</trd>,
      <trd>Daumenregel</trd>
    </trdgrp>
    
    <trd lng="en">heuristic</trd>
    <trd lng="fr">heuristique</trd>
    <trd lng="ru">&c_e;&c_v;&c_r;&c_i;&#769;&c_s;&c_t;&c_i;&c_k;&c_a;</trd>
  </snc>
  <trd lng="uk">&c_je;&c_v;&c_r;&c_i;&c_s;&c_t;&c_i;&#x43A;&c_a;</trd>
</drv>

  </art>

