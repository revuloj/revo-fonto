<art mrk="$Id: pigxin.xml,v 1.12 2023/10/20 16:38:17 revo Exp $">
<kap>
  <rad>pi&gcirc;in</rad>/o <fnt><bib>SPV</bib></fnt>
</kap>
<drv mrk="pigxin.0o">
  <kap><tld/>o</kap>
  <snc mrk="pigxin.0o.LIN">
    <uzo tip="fak">LIN</uzo>
    <dif>
      <ref tip="super" cel="lingv.0o.homa">Lingvo</ref> spontanee
      simpligita de diverslingvanoj por interkompreni&gcirc;o:
      <ekz>
        <tld/>on oni kutime &gcirc;uste difinas kiel lingvon kun vortaro
        prenita el unu lingvo kaj gramatiko el alia
        <fnt>
          <aut>J. S. Larsen</aut>,
          <vrk>Re: Plue pri dialektoj</vrk>,
          <lok>soc.culture.esperanto, 2001-12-09</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_ib;&c_d;&c_zh;&c_y;&c_n;</trd>
  <trd lng="ca">pidgin</trd>
  <trd lng="en">pidgin</trd>
  <trd lng="es">pidgin</trd>
  <trd lng="fr">pidgin</trd>
  <trdgrp lng="ja">
    <trd>&#x30D4;&#x30B8;&#x30F3;&#x8A9E;  <pr>&#x30D4;&#x30B8;&#x30F3;&#x3054;</pr></trd>,
    <trd>&#x6DF7;&#x6210;&#x8A9E;  <pr>&#x3053;&#x3093;&#x305B;&#x3044;&#x3054;</pr></trd>
  </trdgrp>
  <trd lng="nl">pidgin</trd>
  <trd lng="pl">pid&zdot;yn</trd>
  <trd lng="pt">pidgin</trd>
  <trd lng="ro">pidgin</trd>
  <trd lng="ru">&c_p;&c_i;&c_d;&c_zh;&c_i;&c_n;</trd>
  <trdgrp lng="uk">
    <trd>&c_p;&c_ib;&c_d;&c_zh;&c_i;&c_n;-&c_ib;&c_n;&c_gu;&c_l;&c_ib;&c_sh;</trd>,
    <trd>&c_n;&c_je;&c_z;&c_r;&c_o;&c_z;&c_u;&c_m;&c_ib;&c_l;&c_a; &c_m;&c_o;&c_v;&c_a;</trd>,
    <trd>&c_t;&c_a;&c_r;&c_a;&c_b;&c_a;&c_r;&c_shch;&c_i;&c_n;&c_a;</trd>
  </trdgrp>
</drv>
