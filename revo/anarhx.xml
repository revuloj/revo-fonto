<drv mrk="anarhx.0a">
  <kap><tld/>a,
   <var><kap>anarkia</kap></var>
  </kap>
  <snc>
    <dif>
      Senkontrola, malprudente senorda, arbitra:
      <ekz>
        <nom>Albert Cossery</nom> <klr>[&#x2026;]</klr> &dash; la &leftquot;mesa&gcirc;o&rightquot; de lia verkaro estas iel <tld/>a,
        la&ubreve;das pigrecon, socian mar&gcirc;enecon, kontra&ubreve; la pezo, la stulteco, la krueleco de &ccirc;iuj
        potencoj, liaj herooj estas almozuloj, dormemaj ri&ccirc;uloj, &ccirc;iesulinoj, petolaj kaj sentabuaj
        farsuloj, kiujn li oponas al la diktatoreco de socia ordo kaj friponaj ri&ccirc;uloj
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=25419">Albert Cossery</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        kiel konate ekde Aristotelo, anarkia o&hcirc;lokratio (= regado de la plebo) per sekva pa&scirc;o nepre
        fari&gcirc;as tiranio
        <fnt>
          <bib>Monato</bib>
          <aut>Vinko O&scaron;lak</aut>
          <vrk><url ref="&Monato;/2010/010022.php">Dekstrismo en demokratio</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        ilia socio ne povus esti pli simpla, kaj estas, en pozitiva senco, anarkia, 
        la ikaranoj <klr>(utopianoj)</klr> konas nek registaron, nek policon
        <fnt>
          <bib>Monato</bib>
          <aut>Garvan Makaj'</aut>
          <vrk><url ref="&Monato;/2015/011355.php">Komunika&jcirc;o de Ikaro</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_n;&c_a;&c_r;&c_h;&c_ib;&c_ch;&c_n;&c_y;</trd>
  <trd lng="bg">&c_a;&c_n;&c_a;&c_r;&c_h;&c_i;&c_ch;&c_je;&c_n;</trd>
  <trdgrp lng="de">
    <trd>gesetzlos</trd>,
    <trd>anarchisch</trd>,
    <trd>chaotisch</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>anarchic</trd>,
    <trd>anarchist</trd>,
    <trd>chaotic</trd>
  </trdgrp>
  <trdgrp lng="fr">
