  <art mrk="$Id: voliti.xml,v 1.15 2023/09/05 09:43:56 revo Exp $">
    <kap>
      <rad>volitiv</rad>/o</kap>

    <drv mrk="voliti.0o">
      <kap><tld/>o</kap>
      <snc>
      <uzo tip="fak">GRA</uzo>
      <uzo tip="fak">LIN</uzo>
	<dif>
	  <ref tip="super" cel="modal.verba0o">Verba modalo</ref>,
	  per kiu iuj lingvoj esprimas &gcirc;eneralan ideon
	  de volo, ne indikante celecon, deziron, volon, ordonon a&ubreve;
	  peton (u-modalo):
	  <ekz>
	    la esperanta <tld/>o respondas jen al la imperativo
	    jen al la subjunktivo de la okcidente&ubreve;ropaj lingvoj
	    la&ubreve; tio, &ccirc;u &gcirc;i estas en &ccirc;efa a&ubreve; dependa propozicio; &gcirc;i fini&gcirc;as per
	    -u.       
          </ekz>
	</dif>
      </snc>
  <trd lng="ca">volitiu</trd>
  <trd lng="cs">zp&#x16F;sob rozkazovac&#xED; a p&#x159;ac&#xED;</trd>
  <trd lng="de">Volitiv</trd>
  <trd lng="es">volitivo</trd>
  <trd lng="fr">volitif</trd>
  <trd lng="ja">&#x610F;&#x5FD7;&#x6CD5;  [<ind>&#x3044;&#x3057;&#x307B;&#x3046;</ind>]</trd>
  <trd lng="nl">volitief</trd>
  <trdgrp lng="pt">
      <trd>volitivo</trd>
    </trdgrp>
  <trd lng="ru">&c_v;&c_o;&c_l;&c_je;&c_v;&c_o;&c_je; &c_n;&c_a;&c_k;&c_l;&c_o;&c_n;&c_je;&c_n;&c_i;&c_je;</trd>
  <trd lng="sk">sp&#xF4;sob vyjadruj&#xFA;ci chcenie a rozkaz</trd>
  <trd lng="uk">&#x43D;&#x430;&#x43A;&#x430;&#x437;&#x43E;&#x432;&#x438;&#x439; &#x441;&#x43F;&#x43E;&#x441;&#x456;&#x431;</trd>
</drv>
