<art mrk="$Id: histri1.xml,v 1.22 2024/02/08 09:23:17 revo Exp $">
<kap>
  <rad>histrion</rad>/o
</kap>
<drv mrk="histri1.0o">
  <kap><tld/>o</kap>
  <snc mrk="histri1.0o.HIS">
    <uzo tip="fak">HIS</uzo>
    <dif>
      <ref tip="super" cel="aktor.0o">Aktoro</ref> en antikva Romo:
      <ekz>
        <tld/>o <nom>Aliturus</nom> mirinde prezentis hiera&ubreve; Edipon
        <fnt>
          <bib>QuV</bib>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_g;&c_ib;&c_s;&c_t;&c_r;&c_y;&c_jo;&c_n;</trd>
    <trd lng="de">Histrione</trd>
  </snc>
  <snc mrk="histri1.0o.amuzisto">
    <uzo tip="fak">TEA</uzo>
    <dif>
      <ref tip="super" cel="amuz.0isto.KOMUNE">Amuzisto</ref>
      prezentanta vulgarajn kaj krudajn komika&jcirc;ojn:
      <ekz>
        ili aspektis kiel trupo de <tld/>oj kaj ridindaj &scirc;ercafektuloj
        <fnt>
          <bib>SkandalJozef</bib>
        </fnt>;
      </ekz>
      <ekz>
        sen atenti la almozpetan <tld/>adon de la kapelestro, <nom>Berlioz</nom> kuris al la
        turnokruco kaj metis sur &gcirc;in la manon
        <fnt>
          <bib>MkM</bib>
        </fnt>;
      </ekz>
      <ekz>
        ne gravas kiu estas la homo &ndash; &ccirc;u prozulo au poeto, re&gcirc;o a&ubreve;
        <tld/>o, miliardulo a&ubreve; almozpetanto
        <fnt>
        <aut>faa</aut>,
        <vrk>REK - EoLA invitas vin!</vrk>,
        <lok>soc.culture.esperanto, 2000-12-03</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
       <ref cel="arleke.0o.TEA">arlekeno<sncref/></ref>,
       <ref cel="pajac.0o">pajaco</ref>
    </refgrp>
    <trdgrp lng="be">
      <trd>&c_b;&c_l;&c_a;&c_z;&c_a;&c_n;</trd>,
      <trd>&c_p;&c_a;&c_ja;&c_c;</trd>,
      <trd>&c_k;&c_a;&c_m;&c_e;&c_d;&c_y;&c_ja;&c_n;&c_t;</trd>
    </trdgrp>
    <trdgrp lng="de">
      <trd>Kom&ouml;diant</trd>,
      <trd>Schmierenschauspieler</trd>
    </trdgrp>
    <trdgrp lng="hu">
      <trd>poj&aacute;ca</trd>,
      <trd>kom&eacute;di&aacute;s</trd>
    </trdgrp>
    <trd lng="pt">histri&atilde;o</trd>
    <trd lng="zh">&#x5C0F;&#x4E11; <pr>xi&#x1CE;och&#x1D2;u</pr></trd>
</snc>

