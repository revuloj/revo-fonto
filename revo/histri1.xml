  <trdgrp lng="cs">
    <trd>harlek&yacute;n</trd>,
    <trd>histri&oacute;n</trd>,
    <trd>klaun</trd>,
    <trd>komediant</trd>,
    <trd>&scaron;a&scaron;ek</trd>
  </trdgrp>
  <trd lng="fr">histrion</trd>
  <trd lng="it">istrione</trd>
  <trdgrp lng="ja">
    <trd>&#36947;&#21270;&#x5F79;&#32773;  <pr>&#12393;&#12358;&#12369;&#12420;&#x304F;&#12375;&#12419;</pr></trd>,
    <trd>&#22823;&#26681;&#x5F79;&#32773;  <pr>&#12384;&#12356;&#12371;&#12435;&#12420;&#x304F;&#12375;&#12419;</pr></trd>
  </trdgrp>
  <trd lng="nl">histrion</trd>
  <trd lng="ru">&c_f;&c_i;&c_g;&c_l;&c_ja;&c_r;</trd>
  <trdgrp lng="sk">
    <trd>komediant</trd>,
    <trd>&scaron;a&scaron;o</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_b;&#x43B;&c_a;&c_z;&c_je;&#x43D;&#x44C;</trd>,
    <trd>&c_f;&c_ib;&c_gu;&#x43B;&#x44F;&c_r;</trd>,
    <trd>&#x43A;&#x43E;&#x43C;&c_je;&c_d;&c_ib;&c_a;&#x43D;&c_t;</trd>
  </trdgrp>
</drv>
