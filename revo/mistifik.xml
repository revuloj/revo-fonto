<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>mistifik</rad>/i<fnt>Z</fnt>
</kap>
<drv mrk="mistif.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      <ref tip="super" cel="sxerc.0i">&Scirc;erci</ref> per malgrava trompo,
      trouzante ies kredemon.
    </dif>
    <refgrp tip="sin">
      <ref cel="mistif.0i">mistifi</ref>
    </refgrp>
  </snc>
  <trdgrp lng="de">
    <trd>foppen</trd>,
    <trd>narren</trd>,
    <trd>jemanden hinters <ind>Licht</ind> f&uuml;hren</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>faire une <ind>blague</ind></trd>,
    <trd>mystifier</trd>
  </trdgrp>
  <trd lng="nl">foppen</trd>
  <trd lng="ru">&c_m;&c_i;&c_s;&c_t;&c_i;&c_f;&c_i;&c_c;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
</drv>

<drv mrk="mistif.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Ka&ubreve;zanta celitan trompi&gcirc;on a&ubreve; konfuzon:
      <ekz>
        mi estas normala simpla homo, sed la sorto kondukis min en &ccirc;i tiun
        labirinton de ege utilaj kaj foje <tld/>aj fenomenoj<fnt><aut>Will
        Green</aut>: <vrk>Telefona labirinto</vrk>,
        <bib>Monato</bib><lok>jaro 1994a, numero 1a, p. 13a</lok></fnt>...
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>blagueur<klr> (adj.)</klr></trd>,
    <trd>mystificateur<klr> (adj.)</klr></trd>
  </trdgrp>
</drv>

<drv mrk="mistif.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      &Scirc;erca trompo:
      <ekz>
        li sukcesis travidi la multajn <tld/>ojn, kiuj kamufle &ccirc;irka&ubreve;vualas
        nian realan movadan historion<fnt><aut>Pejno Simono</aut>:
        <vrk>Faligas la fundamentojn de esperantismo (Ziko Marcus Sikosek,
        Esperanto sen mitoj)</vrk>, <bib>Monato</bib><lok>jaro 1999a,
        numero 6a, p. 27a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>blague<klr> (tromperie)</klr></trd>,
    <trd>canular</trd>,
    <trd>mystification</trd>
  </trdgrp>
</drv>
</art>

