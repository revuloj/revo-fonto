<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>kapr</rad>/o
</kap>

<drv mrk="kapr.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <uzo tip="fak">ZOO</uzo>
  <snc>
    <dif>
      <ref tip="lst" cel="genr.0o.BIO"
      lst="voko:zoologiaj_genroj">Genro</ref> el la familio
      <ref tip="malprt" cel="boved.0oj">bovedoj</ref>
      (<trd lng="la">Capra</trd>), kun mentonbarbo kaj sabroformaj a&ubreve;
      &scirc;ra&ubreve;be turnitaj <ref tip="prt" cel="korn.0o.besta">kornoj</ref>:
      <ekz>
        tro nutrata <tld/>o fari&gcirc;as kiel apro
        <klr>(feli&ccirc;o fierigas)</klr>
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        barbori&ccirc;a kiel <ind><tld/>oviro</ind>;
        <trdgrp lng="ca">
          <trd>boc</trd>,
          <trd>cabrot</trd>
        </trdgrp>
      </ekz>
      <ekz>
        <ind><tld/>ino</ind>.
        <trd lng="be">&c_k;&c_a;&c_z;&c_a;</trd>  
        <trd lng="br">gavr</trd>
        <trd lng="ca">cabra</trd>
        <trd lng="fr">ch&egrave;vre<klr tip="ind"> (animal)</klr></trd>
        <trd lng="nl">geit</trd>
        <trd lng="ru">&c_k;&c_o;&c_z;&c_a;</trd>
      </ekz>
    </dif>
  </snc>
  <bld lok="../bld/kapr.jpg">
    hejma <tld/>o
  </bld>
  <bld lok="../bld/alpakapr.jpg">
    <ind>alpa <tld/>o</ind>
    <trd lng="la">Capra ibex ibex</trd>
    <trd lng="de">Alpen<ind>steinbock</ind></trd>
    <trd lng="fr">bouquetin</trd>
  </bld>
  <trd lng="be">&c_k;&c_a;&c_z;&c_jo;&c_l;</trd> 
  <trd lng="bg">&c_k;&c_o;&c_z;&c_a;</trd>
  <trdgrp lng="br">
    <trd>bouc'h</trd>,
    <trd>gavr</trd>
  </trdgrp>
  <trd lng="ca">cabra</trd>
  <trd lng="de">Ziege</trd>
  <trd lng="en">goat</trd>
  <trd lng="es">cabra</trd>
  <trdgrp lng="fr">
    <trd>bouc</trd>,
    <trd>ch&egrave;vre<klr tip="ind"> (animal)</klr></trd>
  </trdgrp>
  <trd lng="hu">kecske</trd>
  <trd lng="id">kambing</trd>
  <trd lng="nl">bok</trd>
  <trd lng="ru">&c_k;&c_o;&c_z;&c_jo;&c_l;</trd>
</drv>

<drv mrk="kapr.propeka0o">
  <kap>propeka <tld/>o<fnt>Z</fnt>, <var><kap>pekporta
  <tld/>o</kap></var>, <var><kap>pekofera
  <tld/>o</kap></var></kap>
  <snc>
    <uzo tip="fak">BIB</uzo>
    <dif>
      Ofera <tld/>o, kiun la hebrea &ccirc;efpastro &scirc;ar&gcirc;is per
      &ccirc;iuj
      pekoj de Izrael:
      <ekz>
        Kaj li alportis la oferon de la popolo, kaj li prenis la
        propekan <tld/>on de la popolo, kaj bu&ccirc;is &gcirc;in kaj faris
        el
        &gcirc;i pekoferon kiel el la anta&ubreve;a
        <fnt><bib>MT</bib>, <lok>&Lev; 9:15</lok></fnt>;
      </ekz>
      <ekz>
        Kaj li bu&ccirc;os la pekoferan <tld/>on de la popolo
        <fnt><bib>MT</bib>, <lok>&Lev; 16:15</lok></fnt>.
      </ekz>
    </dif>
    <trdgrp lng="ca">
      <trd>boc expiatori</trd>,
      <trd>boc emissari</trd>
    </trdgrp>
  </snc>
  <snc>
    <uzo tip="stl">FRAZ</uzo>
    <dif>
      Homo a&ubreve; afero, kulpigata a&ubreve; punata pro eraroj de
      aliuloj.
    </dif>
    <trd lng="ca">cap de turc</trd>
  </snc>                           
  <trd lng="br">bouc'h ar pec'hedo&ugrave;</trd>
  <trd lng="de">S&uuml;ndenbock</trd>
  <trd lng="en">scapegoat</trd>
  <trd lng="es">chivo expiatorio</trd>
  <trd lng="fr">bouc &eacute;missaire</trd>
  <trd lng="hu">b&udblac;nbak</trd>
  <trd lng="nl">zondebok</trd>
  <trd lng="ru">&c_k;&c_o;&c_z;&c_jo;&c_l;
  &c_o;&c_t;&c_p;&c_u;&c_shch;&c_je;&c_n;&c_i;&c_ja;</trd>
</drv>
</art>
