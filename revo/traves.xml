<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: traves.xml,v 1.20 2023/10/21 14:37:42 revo Exp $">
<kap>
  <rad>travesti</rad>/i
  <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="traves.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="traves.0i.KOMUNE">
     <dif>
      <ref tip="dif" cel="parodi.0i">Parodii</ref>:
      <ekz>
        <tld/>i Eneidon;
      </ekz>
      <ekz>
        <tld/>ante dira&jcirc;on de la pola verkistino <nom>Zofia Nalkowska</nom>, oni povas diri, ke
        &leftquot;esperantistoj al esperantistoj pretigis &ccirc;i-sorton&#x201D;
        <fnt>
          <bib>Monato</bib>
          <aut>Zofia Banet-Fornalowa</aut>
          <vrk><url ref="&Monato;/2005/008642.php">Tre dan&gcirc;era Monato</url></vrk>
          <lok>2005</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="mask.0i">maski</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_r;&c_a;&c_d;&c_y;&c_ja;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trdgrp lng="de">
    <trd>verkleiden</trd>,
    <trd>parodieren</trd>,
    <trd>kost&uuml;mieren</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>travesty</trd>,
    <trd>parody</trd>,
    <trd>burlesque</trd>
  </trdgrp>
  <trd lng="es">parodiar</trd>
  <trdgrp lng="fr">
    <trd>parodier</trd>,
    <trd>pasticher</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>parodiz&aacute;l</trd>,
    <trd>kifigur&aacute;z</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x3082;&#x3058;&#x308B;</trd>,
    <trd>&#x8336;&#x5316;&#x3059;  <pr>&#x3061;&#x3083;&#x304B;&#x3059;</pr></trd>,
    <trd>&#x4EEE;&#x88C5;&#x3059;&#x308B;  <pr>&#x304B;&#x305D;&#x3046;&#x3059;&#x308B;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>travesteren</trd>,
    <trd>parodi&euml;ren</trd>,
    <trd>verkleden</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>trawestowa&cacute;</trd>,
    <trd>przerabia&cacute; <klr>(utw&oacute;r literacki)</klr></trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_a;&c_r;&c_o;&c_d;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="uk">
    <trd>&c_t;&c_r;&c_a;&c_v;&c_je;&c_s;&c_t;&c_ib;&#x44E;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&#x43F;&c_je;&c_r;&c_je;&c_v;&c_d;&#x44F;&c_g;&c_a;&c_t;&c_i;</trd>
  </trdgrp>
</drv>

<drv mrk="traves.0o">
  <kap><tld/>o</kap>
  <snc mrk="traves.0o.KOMUNE">
    <dif>
      <ref tip="dif" cel="parodi.0o">Parodio</ref>:
      <ekz>
        plej eleganta vira formo estas mizera <tld/>o de la ina
        <fnt><aut>J. Francis</aut>, <vrk>Misio sen Alveno</vrk>, 
        <lok>tk-stafeto, 1982</lok></fnt>;     
      </ekz>
      <ekz>
        vo&ccirc;o solenatone kun skriba sublinio prezentis la <tld/>on, kiu sonus
        esperantlingve tiel: &leftquot;Kara Futbal-dio, venu Via pilko. Fari&gcirc;u Via ludo. Niajn
        golojn donu al ni hodia&ubreve;. <klr>[&#x2026;]</klr>&rightquot;
        <fnt>
          <bib>Monato</bib>
          <aut>Franz-Georg R&ouml;ssler</aut>
          <vrk><url ref="&Monato;/2012/010769.php">Patro nia parodia</url></vrk>
          <lok>2012</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="malprt" cel="bal.kostum0o">kostumbalo</ref>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_r;&c_o;&c_d;&c_y;&c_ja;</trd>
  <trdgrp lng="cs">
    <trd>kost&yacute;m</trd>,
    <trd>maska</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Verkleidung</trd>,
    <trd>Parodie</trd>,
    <trd>Maskerade</trd>
  </trdgrp>
  <trd lng="fr">parodie</trd>
  <trdgrp lng="ja">
    <trd>&#x3082;&#x3058;&#x308A;</trd>,
    <trd>&#x4EEE;&#x88C5;  <pr>&#x304B;&#x305D;&#x3046;</pr></trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>trawestacja</trd>,
    <trd>przer&oacute;bka <klr>(utworu literackiego)</klr></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>kost&yacute;m</trd>,
    <trd>maska</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_t;&c_r;&c_a;&c_v;&c_je;&c_s;&c_t;&c_ib;&#x44F;</trd>,
    <trd>&#x43F;&c_a;&c_r;&#x43E;&c_d;&c_ib;&#x44F;</trd>
  </trdgrp>
</drv>
</art>
