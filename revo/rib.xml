<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: rib.xml,v 1.30 2022/03/26 19:19:19 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>rib</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="rib.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="rib.0o.KUI">
    <uzo tip="fak">KUI</uzo>
    <dif>
      Malgranda, glatha&ubreve;ta acideta bero, frukto de <tld/>ujo:
      <ekz>
        vulgaraj <tld/>oj de Ribes sativum, nigraj <tld/>oj de Ribes nigrum, ru&gcirc;aj <tld/>oj 
        de Ribes rubrum, oraj <tld/>oj de Ribes aureum, grosoj de Ribes grossularia
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="http://www.esperanto.be/fel/mon/007157.html">Vivo: Riboj</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        <frm>K</frm><klr>[aliumon]</klr> enhavas legomoj, fruktoj (ru&gcirc;a <tld/>o)
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=11528">Mineralo</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="vid" cel="gros.0o">groso</ref>
  </snc>
  <snc mrk="rib.0o.BOT">
    <dif>
      <ref tip="dif" cel="rib.0ujo.BOT"><tld lit="R"/>ujo</ref>:
      <ekz>
        efika kontra&ubreve; artrito estas folioj el Nigra <tld/>o
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=32888">Artrito</url></lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_r;&c_e;&c_ch;&c_k;&c_ib;</trd>
  <trd lng="bg">&c_k;&c_a;&c_s;&c_i;&c_s;</trd>
  <trdgrp lng="ca">
    <trd>riber</trd>,
    <trd>cirerola</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>meruzalka</trd>,
    <trd>ryb&iacute;z</trd>
  </trdgrp>
  <trd lng="de">Johannisbeerstrauch <klr>(ru&gcirc;a, nigra ribo)</klr></trd>
  <trd lng="en">currant</trd>
  <trdgrp lng="hu">
    <trd>ribiszke</trd>,
    <trd>ribizli</trd>
  </trdgrp>
  <trd lng="nl">bes</trd>
  <trd lng="pl">porzeczka</trd>
  <trd lng="pt">groselha</trd>
  <trd lng="ru">&c_s;&c_m;&c_o;&c_r;&c_o;&c_d;&c_i;&c_n;&c_a;</trd>
  <trd lng="sk">r&iacute;bez&lcaron;a <klr>(ovocie)</klr></trd>
  <trd lng="sv">vinb&auml;r</trd>
  <trdgrp lng="uk">
    <trd>&#x43F;&#x43E;&#x440;&#x456;&#x447;&#x43A;&#x438;</trd>,
    <trd>&#x441;&#x43C;&#x43E;&#x440;&#x43E;&#x434;&#x438;&#x43D;&#x430;</trd>
  </trdgrp>
</drv>

<drv mrk="rib.nigra0o">
  <kap>nigra <tld/>o</kap>
  <snc mrk="rib.nigra0o.KUI">
    <dif>
      Bero de nigra <tld/>ujo:
      <ekz>
        kasiso estas franca likvoro farita el nigraj <tld/>oj
        <fnt>
          <bib>Monato</bib>
          <vrk><url ref="http://www.esperanto.be/fel/mon/007157.html">Vivo: Riboj</url></vrk>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="rib.nigra0o.BOT">
    <dif>
      Nigra <tld/>ujo, portanta nigrajn berojn
      (el <trd lng="la">Ribes nigrum</trd>):
      <ekz>
        Nigra <tld/>o estas arbusto, kiu havas man&gcirc;eblajn berojn kun alta enhavo de la vitamino C
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=43490">Nigra ribo</url></lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Schwarze Johannisbeere</trd>
  <trd lng="cs">&ccaron;ern&yacute; ryb&iacute;z</trd>
  <trd lng="fr">cassis</trd>
  <trd lng="sk">&ccaron;ierna r&iacute;bez&lcaron;a</trd>
</drv>

<drv mrk="rib.rugxa0o">
  <kap>ru&gcirc;a <tld/>o</kap>
  <snc mrk="rib.rugxa0o.KUI">
    <dif>
      Bero de ru&gcirc;a <tld/>ujo.
    </dif>
  </snc>
  <snc mrk="rib.rugxa0o.BOT">
    <dif>
      Ru&gcirc;a <tld/>ujo, portanta ru&gcirc;ajn berojn
      (el <trd lng="la">Ribes rubrum</trd>).
    </dif>
  </snc>
  <bld lok="../bld/rib.jpg">
    beroj de ru&gcirc;a <tld/>o
  </bld>
  <trd lng="be">&c_ch;&c_y;&c_r;&c_v;&c_o;&c_n;&c_y;&c_ja; <ind>&c_p;&c_a;&c_r;&c_e;&c_ch;&c_k;&c_ib;</ind></trd>
  <trd lng="ca"><ind>riber</ind> vermell</trd>
  <trd lng="fr">groseille<klr> (rouge)</klr></trd>
  <trd lng="hu">piros <ind>ribiszke</ind></trd>
  <trd lng="nl">aalbes</trd>
  <trd lng="pl">czerwona <ind>porzeczka</ind></trd>
</drv>

<drv mrk="rib.0ujo">
  <kap><tld/>ujo</kap>
  <snc mrk="rib.0ujo.BOT">
    <uzo tip="fak">BOT</uzo>
    <dif>
      Arbedo kun malgrandaj bongustaj acidetaj beroj;
      <ref tip="lst" cel="genr.0o.BIO" lst="voko:botanikaj_genroj">genro</ref> el familio
      <ref tip="malprt" cel="grosujac.0oj">grosulariacoj</ref>
      (<trd lng="la">Ribes</trd>):
      <ekz>
         <tld/>ujo grefteblas, kvankam malfacile, sur la grosujo
         <fnt>
           <bib>OriginoDeSpecioj</bib>,
           <lok>&ccirc;apitro 8a</lok>
         </fnt>.
      </ekz>
    </dif>
    <refgrp tip="sub">
      <ref cel="gros.0ujo.BOT">grosujo</ref>
    </refgrp>
  </snc>
  <trdgrp lng="fr">
    <trd>cassissier</trd>,
    <trd>groseiller</trd>
  </trdgrp>
</drv>
</art>
