<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: bombas.xml,v 1.22 2026/02/20 19:03:34 revo Exp $">
  <kap>
    <ofc>4</ofc>
    <rad>bombast</rad>/o
  <fnt><bib>PVEF</bib></fnt></kap>
<drv mrk="bombas.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      <ref tip="dif" cel="parol.sxvel0o">&Scirc;velparolo</ref>,
      tropompeco, trograndigo en la parolo:
      <ekz>
        tiu argumento devas ridigi &ccirc;iun prudente pensantan homon, anta&ubreve; kiu estas
        konataj la falsaj <tld/>oj, uzataj de la sagaca diplomatio
        <fnt>
          <bib>VaK</bib>
          <lok>Unua &Ccirc;apitro</lok>
        </fnt>;
      </ekz>
      <ekz>
        lia tro ornamita, senguste pompa kaj <ind><tld/>a</ind> stilo estis tre malproksima de la
        anta&ubreve;aj majstroj
        <fnt>
          <bib>Ret</bib>
          <lok>Dua Parto</lok>
        </fnt>;
        <trd lng="de">schw&uuml;lstig</trd>
      </ekz>
      <ekz>
        &leftquot;bone, bone&#x201D;, <tld/>is la instruistino, &leftquot;sufi&ccirc;as por hodia&ubreve;&rightquot;
        <fnt>
          <bib>Monato</bib>
          <aut>Angela Tellier</aut>
          <vrk><url ref="&Monato;/2004/008306.html">La&ubreve;proverbaj fabeloj</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        akcentinte per iom <tld/>aj vortoj liajn meritojn en la milito kaj post &gcirc;i, la
        oratoro venis al kulmina parto de sia paroladeto
        <fnt>
          <bib>Ret</bib>
          <lok>Dua Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        la pavo asoci<klr>[i&gcirc;]</klr>as kun <tld/>o, fiero kaj vanto
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=260344">Barata pavo</url></lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="emfaz.0o">emfazo</ref>,
      <ref cel="fanfar1.0ajxo">fanfarona&jcirc;o</ref>,
      <ref cel="parad.0o">parado</ref>,
      <ref cel="patos.0o">patoso</ref>
    </refgrp>
    <trdgrp lng="be">
      <trd>&c_n;&c_a;&c_p;&c_y;&c_sh;&c_l;&c_ib;&c_v;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>,
      <trd>&c_v;&c_y;&c_s;&c_a;&c_k;&c_a;&c_m;&c_o;&c_w;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
    </trdgrp>
    <trdgrp lng="de">
      <trd>Redeschwulst</trd>,
      <trd>bombastische Rede</trd>,
      <trd>geschwollene Rede</trd>
    </trdgrp>
    <trd lng="en">bombast</trd>
    <trdgrp lng="fr">
      <trd>grandiloquence</trd>,
      <trd>emphase</trd>,
      <trd>pompe</trd>
    </trdgrp>
    <trdgrp lng="pl">
      <trd>g&oacute;rnolotno&sacute;&cacute;</trd>,
      <trd>wznios&lstroke;o&sacute;&cacute;</trd>
    </trdgrp>
    <trdgrp lng="ro">
      <trd>grandilocven&tcomma;&abreve;</trd>,
      <trd>sublim</trd>
    </trdgrp>
    <trdgrp lng="ru">
      <trd>&c_n;&c_a;&c_p;&c_y;&c_shch;&c_je;&c_n;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>,
      <trd>&c_v;&c_y;&c_s;&c_o;&c_k;&c_o;&c_p;&c_a;&c_r;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>,
      <trd>&c_v;&c_i;&c_t;&c_i;&c_je;&c_v;&c_a;&c_t;&c_o;&c_s;&c_t;&c_mol;</trd>
    </trdgrp>
  </snc>
  <trdgrp lng="cs">
    <trd>bombast</trd>,
    <trd>mnohomluvnost</trd>,
    <trd>pr&aacute;zdn&eacute; fr&aacute;zovit&eacute; &rcaron;e&ccaron;i</trd>
  </trdgrp>
  <trd lng="he">&mem;&lamed;&yod;&tsadi;&yod;&vav;&tav;</trd>
  <trdgrp lng="ja">
    <trd>&#x5927;&#x8A00;&#x58EE;&#x8A9E;  <pr>&#x305F;&#x3044;&#x3052;&#x3093;&#x305D;&#x3046;&#x3054;</pr></trd>,
    <trd>&#x8A87;&#x5F35;  <pr>&#x3053;&#x3061;&#x3087;&#x3046;</pr></trd>
  </trdgrp>
  <trd lng="sk">pr&aacute;zdne fr&aacute;zovit&eacute; re&ccaron;i</trd>
  <trdgrp lng="uk">
    <trd>&c_p;&c_i;&c_sh;&c_n;&c_o;&c_m;&c_o;&c_v;&c_n;&c_ib;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_v;&c_i;&c_s;&c_o;&c_k;&c_o;&c_m;&c_o;&c_v;&c_n;&c_ib;&c_s;&c_t;&c_mol;</trd>,
    <trd>&c_f;&c_a;&c_l;&c_mol;&c_sh;&c_i;&c_v;&c_i;&c_j; (&c_a;&c_b;&c_o;&nbsp;&c_u;&c_d;&c_a;&c_v;&c_a;&c_n;&c_i;&c_j;) &c_p;&c_a;&c_f;&c_o;&c_s;</trd>,
    <trd>&c_b;&c_o;&c_m;&c_b;&c_a;&c_s;&c_t;</trd>
  </trdgrp>
</drv>
</art>
