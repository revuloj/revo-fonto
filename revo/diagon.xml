<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>diagonal</rad>/o
</kap>
<drv mrk="diagon.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="diagon.0o.plurlatero">
    <fnt><bib>MatTerm</bib><lok>p. 28</lok></fnt>
    <dif>
      <klr>(de <ref cel="later.plur0o">plurlatero</ref>)</klr>
      <ref cel="rekt.0o.elementa">Rekto</ref> a&ubreve;
      <ref cel="strek.0o.segmento">streko</ref>, kunliganta du verticojn, kiuj
      ne apartenas al la sama latero:
      <ekz>
        ne ekzistas <tld/>o en triangulo;
      </ekz>
      <ekz>
        en kvarlatero ekzistas du <tld/>oj;
      </ekz>
      <ekz>
        la <tld/>oj de paralelogramo sin intersekcas en siaj mezoj.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="diamet.0o.subaro">diametro</ref>.
    </refgrp>
  </snc>
  <snc mrk="diagon.0o.de_matrico">
    <fnt><bib>EKV</bib><lok>&para;77</lok></fnt>
    <dif>
      <klr>(de <ref cel="matric.n_p0o">(n,n)-matrico</ref>)</klr>
      La n-opo, konsistanta el &ccirc;iuj &gcirc;iaj elementoj kun indico (i,i).
    </dif>
  </snc>
  <bld lok="../bld/diagon.gif">
    <tld/>o de matrico
  </bld>
  <trd lng="de">Diagonale</trd>
  <trd lng="en">diagonal</trd>
  <trd lng="es">diagonal</trd>
  <trd lng="fr">diagonale</trd>
  <trd lng="ru">&c_d;&c_i;&c_a;&c_g;&c_o;&c_n;&c_a;&c_l;&c_mol;</trd>
  <trd lng="sk">uhloprie&ccaron;ka</trd>
</drv>

<drv mrk="diagon.0a">
  <kap><tld/>a</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="diagon.0a.streko">
    <fnt><bib>VdE</bib></fnt>
    <dif>
      <klr>(p.p. <ref cel="strek.0o.segmento">streko</ref> a&ubreve;
      <ref cel="rekt.0o.MAT">rekto</ref>)</klr>
      Samdirekta kiel la <ref cel="diagon.0o.plurlatero"><tld/>o <sncref/></ref>.
    </dif>
    <refgrp tip="vid">
      <ref cel="oblikv.0a">oblikva</ref>,
      <ref cel="transv.0a">transversa</ref>.
    </refgrp>
    <trd lng="fr">diagonal</trd>
  </snc>
  <snc>
    <subsnc mrk="diagon.0a.elemento">
      <dif>
        <klr>(p.p. <ref cel="elemen.0o.matrico">elemento</ref> de
        (n,n)-matrico)</klr>
        Estanta sur &gcirc;ia 
        <ref cel="diagon.0o.de_matrico"><tld/>o <sncref/></ref>:
        <ekz>
          matrico kun egalaj <tld/>aj elementoj.
        </ekz>
      </dif>
      <trd lng="de">Diagonal-<klr tip="amb">(element)</klr></trd>
      <trd lng="en">diagonal<klr tip="ind"> (element)</klr></trd>
      <trd lng="fr"><klr tip="ind">(&eacute;l&eacute;ment) </klr>diagonal</trd>
      <trd lng="ru">&c_d;&c_i;&c_a;&c_g;&c_o;&c_n;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;<klr tip="ind"> (&c_e;&c_l;&c_je;&c_m;&c_je;&c_n;&c_t;)</klr></trd>
    </subsnc>
    <subsnc mrk="diagon.0a.matrico">
      <fnt><bib>MatVort</bib></fnt>
      <dif>
        <klr>(p.p. <ref cel="matric.n_p0o">(n,n)-matrico</ref>)</klr>
        Kies &ccirc;iuj elementoj estas nulaj, krom tiuj situantaj
        sur &gcirc;ia 
        <ref cel="diagon.0o.de_matrico"><tld/>o <sncref/></ref>:
        <ekz>
          la unuomatrico estas <tld/>a.
        </ekz>
      </dif>
      <trd lng="de">Diagonal-<klr tip="amb">(matrix)</klr></trd>
      <trd lng="en">diagonal<klr tip="ind"> (matrix)</klr></trd>
      <trd lng="fr"><klr tip="amb">(matrice) </klr>diagonale</trd>
      <trd lng="ru">&c_d;&c_i;&c_a;&c_g;&c_o;&c_n;&c_a;&c_l;&c_mol;&c_n;&c_a;&c_ja;<klr tip="amb"> (&c_m;&c_a;&c_t;&c_r;&c_i;&c_c;&c_a;)</klr></trd>
    </subsnc>
  </snc>
  <trdgrp lng="de">
    <trd>diagonal</trd>
  </trdgrp>
  <trd lng="en">diagonal</trd>
  <trd lng="es">diagonal</trd>
  <trd lng="ru">&c_d;&c_i;&c_a;&c_g;&c_o;&c_n;&c_a;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
</drv>

<drv mrk="diagon.0igebla">
  <kap><tld/>igebla</kap>
  <uzo tip="fak">MAT</uzo>
  <snc mrk="diagon.0igebla.endomorfio">
    <dif>
      <klr>(p.p. <ref cel="endomo.0o">endomorfio</ref> en
      <ref cel="spac.vektora0o">vektora spaco</ref> <em>E</em>)</klr>
      Tia, ke <em>E</em> egalas al la
      <ref cel="rekt.0a.sumo">rekta</ref>
      <ref cel="sum.0o.vektorasubspaco">sumo</ref> de
      &gcirc;iaj <ref cel="ajgen.0subspaco">ajgensubspacoj</ref>:
      <ekz>
        la matrico de <tld/>igebla endomorfio rilate al bazo konsistanta
        el ajgenvektoroj estas <tld/>a.
      </ekz>
    </dif>
  </snc>
  <snc mrk="diagon.0igebla.matrico">
    <dif>
      <klr>(p.p. <ref cel="matric.n_p0o">(n,n)-matrico</ref>)</klr>
      Tia, ke ekzistas <tld/>igebla endomorfio, kies matrico &gcirc;i
      estas.
    </dif>
  </snc>
  <adm>
    Mi ne trovis auxtoritatan fonton. <aut>MB</aut>
  </adm>
  <trd lng="en">diagonalizable</trd>
  <trd lng="de">diagonalisierbar</trd>
  <trd lng="fr">diagonalisable</trd>
  <trd lng="ru">&c_d;&c_i;&c_a;&c_g;&c_o;&c_n;&c_a;&c_l;&c_i;&c_z;&c_u;&c_je;&c_m;&c_y;&c_j;</trd>
</drv>
</art>
