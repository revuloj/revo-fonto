<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>ban</rad>/i
</kap>
<drv mrk="ban.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc num="1">
    <dif>
      Trempi, meti iun a&ubreve; ion en akvon, flua&jcirc;on, por lavi
      a&ubreve; kuraci:
      <ekz>
        <tld/>i infanon, &ccirc;evalon;
      </ekz>
      <ekz>
        sin <tld/>i;
      </ekz>
      <ekz>
        Anglujo estas &ccirc;iuflanke <tld/>ata de
        la maro.
      </ekz>
    </dif>
  </snc>
  <snc num="2">
    <uzo tip="klr">(f)</uzo>
    <dif>
      Superver&scirc;i per, malsekigi per:
      <ekz>
        larmoj <tld/>is liajn vangojn;
      </ekz>
      <ekz>
        &scirc;i estis <tld/>ata per larmoj;
      </ekz>
      <ekz>
        herbejoj <tld/>ataj de roso
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="satur.0i">saturi</ref>,
      <ref cel="ond">&ccirc;irka&ubreve;ondi</ref>.
    </refgrp>
  </snc>
  <trd lng="cs">koupat</trd>
  <trd lng="de">baden</trd>
  <trd lng="nl">baden</trd>
  <trd lng="en">bathe</trd>
</drv>
<drv mrk="ban.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc>
    <dif>
      Sin <tld/>i, fari&gcirc;i <tld/>ata:
      <ekz>
        la arboj <tld/>i&gcirc;as en la
        rivero;
      </ekz>
      <ekz>
        oni trovis lin <tld/>i&gcirc;antan en sia sango;
      </ekz>
      <ekz>
        vasta lando <tld/>i&gcirc;anta en la briloj de la suno
        <fnt>(<aut>Kabe</aut>: <vrk>La Faraono, 1a vol.</vrk>,
        <lok>&ccirc;ap. 3</lok>)</fnt>.
      </ekz> 
    </dif>
    <refgrp tip="sin">
      <ref cel="dron.0i">droni</ref>,
      <ref cel="versx.super0i">superver&scirc;i</ref>,
      <ref cel="satur.0i">saturi</ref>.
    </refgrp>
  </snc>
</drv>
<drv mrk="ban.0o">
  <kap><tld/>o</kap>
  <snc num="1">
    <dif>
      Ago sin <tld/>i. 
    </dif>
  </snc>
  <snc num="2">
    <dif>
      Flua&jcirc;o en kiu oni sin <tld/>as:
      <ekz>
        la <tld/>o estas tro varma.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Bad</trd>
  <trd lng="nl">bad</trd>
</drv>
<drv mrk="ban.0ejo">
  <kap><tld/>ejo</kap>
  <snc>
    <dif>
      Domo, &ccirc;ambro en kiu oni sin <tld/>as.
    </dif>
  </snc>
  <trd lng="de">Bad</trd>
  <trdgrp lng="nl"><trd>zwembad</trd>, <trd>bad</trd></trdgrp>
</drv>
<drv mrk="ban.0ujo">
  <kap><tld/>ujo</kap>
  <snc>
    <dif>
      Bankuvo. 
    </dif>
  </snc>
  <trd lng="de">Wanne</trd>
  <trd lng="nl">badkuip</trd>
</drv>
<drv mrk="ban.0urbo0loko">
  <kap><tld/>urbo, <tld/>loko</kap>
  <snc>
    <dif>
      Loko, kie oni kuracas per <tld/>oj (mineralaj, maraj). 
    </dif>
  </snc>
  <trd lng="de">Badeort</trd>
  <trd lng="nl">badplaats</trd>
</drv>
<drv mrk="ban.0gastoj">
  <kap><tld/>gastoj</kap>
  <snc>
    <dif>
      Malsanuloj, kiuj venas en <tld/>urbon por sin kuraci. 
    </dif>
  </snc>
  <trd lng="de">Badeg&auml;ste</trd>
  <trd lng="nl">badgasten</trd>
</drv>
<drv mrk="ban.sxvit0o">
  <kap>&scirc;vit<tld/>o</kap>
  <snc>
    <dif>
      <tld/>o en seka tre varmigita aero. 
    </dif>
  </snc>
  <trdgrp lng="de"><trd>Schwitzbad</trd>, <trd>Sauna</trd></trdgrp>
  <trd lng="nl">sauna</trd>
</drv>
<drv mrk="ban.sun0o">
  <kap>sun<tld/>o</kap>
  <snc>
    <dif>
      Elmetado de  la korpo al la sunradioj. 
    </dif>
  </snc>
  <trd lng="de">Sonnenbad</trd>
</drv>
<drv mrk="ban.fiks0o">
  <kap>fiks<tld/>o</kap>
  <snc>
    <dif>
      &Hcirc;emia solva&jcirc;o uzata por igi fotografa&jcirc;on nedifektebla
      de la lumo.
    </dif>
  </snc>
  <trd lng="de">Fixierbad</trd>
</drv>
</art>
