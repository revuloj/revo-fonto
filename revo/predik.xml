<art mrk="$Id: predik.xml,v 1.28 2023/09/03 12:45:11 revo Exp $">
<kap>
  <ofc>*</ofc>
  <rad>predik</rad>/i <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="predik.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="predik.0i.REL">
    <dif>
      Konigi al publiko religiajn verojn:
      <ekz>
        <tld/>u la evangelion al &ccirc;iu kreita&jcirc;o
        <fnt>
          <bib>NT</bib>
          <lok>Marko 16:15</lok>
        </fnt>;
      </ekz>
      <ekz>
        ili ne &ccirc;esis instrui kaj <tld/>i Jesuon, la Kriston
        <fnt>
          <bib>NT</bib>
          <lok>La agoj 5:42</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi <tld/>as justecon en granda kunveno
        <fnt>
          <bib>MT</bib>
          <lok>Psalmaro 40:9</lok>
        </fnt>;
      </ekz>
      <ekz>
        ili <tld/>is al vi viziojn malverajn
        <fnt>
          <bib>MT</bib>
          <lok>Plorkanto 2:14</lok>
        </fnt>;
      </ekz>
      <ekz>
        ili <tld/>as militon
        <fnt>
          <bib>MT</bib>
          <lok>Mi&hcirc;a 3:5</lok>
        </fnt>;
      </ekz>
      <ekz>
        en la pre&gcirc;ejo staris la pastro sur la katedro kaj <tld/>is per la&ubreve;ta kaj kolera
        vo&ccirc;o
        <fnt>
          <bib>Fab3</bib>
          <lok>Historio</lok>
        </fnt>;
      </ekz>
      <ekz>
        la esperantismo <klr>[&#x2026;]</klr> predikas amon
        <fnt>
          <bib>Paroloj</bib>
          <vrk>Parolado en la Guildhall (Londono) en la 21a de a&ubreve;gusto 1907</vrk>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>i <klr>(rekomendi)</klr> akvon kaj trinki brandon;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <tld/>i al surduloj
        <klr>(ne esti a&ubreve;skultata nek obeata)</klr>
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_r;&c_a;&c_p;&c_a;&c_v;&c_je;&c_d;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trd lng="ca">predicar</trd>
  <trdgrp lng="cs">
    <trd>predikovat</trd>,
    <trd>p&rcaron;isoudit vlastnost n. vtah</trd>,
    <trd>p&rcaron;isuzovat</trd>
  </trdgrp>
  <trd lng="de">predigen</trd>
  <trd lng="en">preach</trd>
  <trd lng="es">predicar</trd>
  <trd lng="fr">pr&ecirc;cher</trd>
  <trdgrp lng="hu">
    <trd>pr&eacute;dik&aacute;l</trd>,
    <trd>ig&eacute;t hirdet</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x8AAC;&#x304F;  [<ind>&#x3068;&#x304F;</ind>]</trd>,
    <trd>&#x8AAC;&#x6559;&#x3059;&#x308B;  [<ind>&#x305B;&#x3063;&#x304D;&#x3087;&#x3046;&#x3059;&#x308B;</ind>]</trd>,
    <trd>&#x8AAC;&#x304D;&#x52E7;&#x3081;&#x308B;  [<ind>&#x3068;&#x304D;&#x3059;&#x3059;&#x3081;&#x308B;</ind>]</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>preken</trd>,
    <trd>prediken</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>kazanie wyg&lstroke;asza&cacute;</trd>,
    <trd>prawi&cacute;</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>pregar <klr>(religi&atilde;o)</klr></trd>,
    <trd>predicar</trd>,
    <trd>fazer <ind>serm&atilde;o</ind></trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_p;&c_o;&c_v;&c_je;&c_d;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>predikova&tcaron;</trd>,
    <trd>prisudzova&tcaron;</trd>
  </trdgrp>
  <trd lng="uk">&c_p;&c_r;&c_o;&c_p;&c_o;&c_v;&c_ib;&c_d;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>
</drv>

<drv mrk="predik.0o">
  <kap><tld/>o</kap>
  <snc mrk="predik.0o.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      <ref tip="super" cel="parol.0ado.publika">Parolado</ref> pri religia temo:
      <ekz>
        edifaj <tld/>oj
        <fnt>
          <bib>MT</bib>
          <lok>Sentencoj 6:23</lok>
        </fnt>;
      </ekz>
      <ekz>
        se ne ekzistas profetaj <tld/>oj, tiam popolo fari&gcirc;as sova&gcirc;a
        <fnt>
          <bib>MT</bib>
          <lok>Sentencoj 29:18</lok>
        </fnt>;
      </ekz>
      <ekz>
        ili malestimis &ccirc;iujn miajn <tld/>ojn
        <fnt>
          <bib>MT</bib>
          <lok>Sentencoj 1:30</lok>
        </fnt>;
      </ekz>
      <ekz>
        ni havis tre pian kaj kompateman pastron, kiu faris al ili tre belan <tld/>on
        <fnt>
          <bib>Kandid</bib>
          <lok>&Ccirc;apitro XII</lok>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>o konsistas &ccirc;efe el persvado
        <fnt>
          <bib>Ret</bib>
          <lok>Dua Parto</lok>
        </fnt>;
      </ekz>
      <ekz>
        e&ccirc; kontra&ubreve; pastra <tld/>o trovi&gcirc;as kritiko
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        fari al iu <tld/>on pri moroj
        <klr>(severe ripro&ccirc;i)</klr>.
        <fnt><bib>PrV</bib></fnt>
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_r;&c_o;&c_p;&c_a;&c_v;&c_je;&c_d;&c_z;&c_mol;</trd>
  <trdgrp lng="ca">
    <trd>predicaci&oacute;</trd>,
    <trd>serm&oacute;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>k&aacute;z&aacute;n&iacute;</trd>,
    <trd>promluva</trd>
  </trdgrp>
  <trd lng="de">Predigt</trd>
  <trdgrp lng="en">
    <trd>sermon</trd>,
    <trd>homily</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>pr&ecirc;che</trd>,
    <trd>pr&eacute;dication</trd>,
    <trd>sermon</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>pr&eacute;dik&aacute;ci&oacute;</trd>,
    <trd>igehirdet&eacute;s</trd>
  </trdgrp>
  <trd lng="ja">&#x8AAC;&#x6559;  [<ind>&#x305B;&#x3063;&#x304D;&#x3087;&#x3046;</ind>]</trd>
  <trd lng="nl">preek</trd>
  <trd lng="pl">kazanie</trd>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_p;&c_o;&c_v;&c_je;&c_d;&c_mol;</trd>
  <trd lng="sk">predikcia</trd>
  <trd lng="uk">&c_p;&c_r;&c_o;&c_p;&c_o;&c_v;&c_ib;&c_d;&c_mol;</trd>
</drv>

<drv mrk="predik.0ema">
  <kap><tld/>ema</kap>
  <snc mrk="predik.0ema.KOMUNE">
    <uzo tip="klr">(ofte malfavore)</uzo>
    <dif>
      Volonte <tld/>anta, longe, publike instruanta:
      <ekz>
        la malbonan bildon de Esperanto ka&ubreve;zas ne la malgrandeco kaj
        malforteco de &gcirc;ia komunumo, sed ties stilo fu&scirc;a, fanfarona, 
        <tld/>ema
        <fnt>
          <aut>giuseppe</aut>,
          <vrk>en: <url ref="http://www.liberafolio.org/arkivo/www.liberafolio.org/2010/lingva-konflikto-en-sveda-esperantujo/">
           Lingva konflikto en sveda Esperantujo </url></vrk>,
          <lok>libera folio, 2010-11-11</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="en">preachy</trd>
  <trdgrp lng="fr">
    <trd>pontifiant</trd>,
    <trd>sermonneur</trd>
  </trdgrp>
  <trd lng="ja">&#x8AAC;&#x6559;&#x597D;&#x304D;&#x306A;  [<ind>&#x305B;&#x3063;&#x304D;&#x3087;&#x3046;&#x3059;&#x304D;&#x306A;</ind>]</trd>
  <trd lng="pl">kaznodziejski</trd>
</drv>

<drv mrk="predik.0isto">
  <kap><tld/>isto</kap>
  <snc mrk="predik.0isto.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      Homo, ordinare kleriko, kiu ofte a&ubreve; talente <tld/>as:
      <ekz>
        mi estas nomita <tld/>isto kaj <ref cel="aposto.0o.KRI">apostolo</ref>
        <fnt>
          <bib>NT</bib>
          <lok>I. Timoteo 2:7</lok>
        </fnt>;
      </ekz>
      <ekz>
        <ind>palaca <tld/>isto</ind>
        <fnt>
          <bib>Fab2</bib>
          <lok>La najtingalo</lok>
        </fnt>;
        <trd lng="de">Hofprediger</trd>
      </ekz>
      <ekz>
        la <tld/>isto metis al &scirc;i la manon sur la kapon kaj parolis pri la sankta bapto,
        pri la interligo kun Dio
        <fnt>
          <bib>Fab2</bib>
          <lok>Ru&gcirc;aj &scirc;uoj</lok>
        </fnt>;
      </ekz>
      <ekz>
        d<klr>okto</klr>ro <nom>Vincent</nom> mem estis devigita de diversaj
        malfeli&ccirc;aj cirkonstancoj forlasi en la a&gcirc;o de 20 jaroj
        la kolegion kaj fari&gcirc;i Metodista <tld/>isto
        <fnt>
          <bib>FK</bib>,
          <lok>bagateloj</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="pastr.0o">pastro</ref>
    </refgrp>
  </snc>
  <trd lng="ca">predicador</trd>
  <trd lng="cs">p&rcaron;edn&aacute;&scaron;ej&iacute;c&iacute;</trd>
  <trd lng="de">Prediger</trd>
  <trd lng="en">preacher</trd>
  <trd lng="fr">pr&eacute;dicateur</trd>
  <trdgrp lng="ja">
    <trd>&#x8AAC;&#x6559;&#x5E2B;  [<ind>&#x305B;&#x3063;&#x304D;&#x3087;&#x3046;&#x3057;</ind>]</trd>,
    <trd>&#x4F1D;&#x9053;&#x8005;  [<ind>&#x3067;&#x3093;&#x3069;&#x3046;&#x3057;&#x3083;</ind>]</trd>
  </trdgrp>
  <trd lng="pl">kaznodzieja</trd>
  <trd lng="sk">predn&aacute;&scaron;aj&uacute;ci</trd>
  <trd lng="uk">&c_p;&c_r;&c_o;&c_p;&c_o;&c_v;&c_ib;&c_d;&c_n;&c_i;&c_k;</trd>
</drv>


<drv mrk="predik.monto0o">
      <kap>monto<tld/>o</kap>
      <snc mrk="predik.monto0o.KRI">
        <uzo tip="fak">KRI</uzo>
        <dif>
          <tld lit="P"/>o farita de <ref cel="jesu.0o">Jesuo</ref> sur
          (la&ubreve; Mateo) a&ubreve; apud (la&ubreve; Luko) <ref cel="mont.0o">monto</ref> al
          siaj dis&ccirc;iploj kaj granda homamaso:
          <ekz>
            min mem trafis, ekzemple, la paragrafoj 612&ndash;621
            kvaza&ubreve; e&hcirc;oj de l' t.n. monto<tld/>o de Jesuo en la
            evangelio la&ubreve; Mateo
            <fnt>
              <aut>G. Berveling</aut>
              <vrk>
                <url ref="&Monato;/1998/dvoj.html">
                  Sankta Skribo de Oomoto en Esperanto
                </url></vrk>
                <bib>Monato</bib>
                <lok>1998/11, p. 27-28</lok>
            </fnt>.
          </ekz>
        </dif>
      </snc>
      <trd lng="de">Bergpredigt</trd>
      <trd lng="en">Sermon on the Mount</trd>
      <trd lng="fr">sermon sur la montagne</trd>
      <trd lng="pl">kazanie g&oacute;rskie</trd>
      <trd lng="ru">&c_n;&c_a;&c_g;&c_o;&c_r;&c_n;&c_a;&c_ja;
      &c_p;&c_r;&c_o;&c_p;&c_o;&c_v;&c_je;&c_d;&c_mol;</trd>
</drv>
</art>
