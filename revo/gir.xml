<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: gir.xml,v 1.10 2022/04/30 08:42:40 revo Exp $">
<kap>
  <rad>gir</rad>/i <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="gir.0i">
  <kap><tld/>i</kap>
    <gra><vspec>x</vspec></gra>
    <uzo tip="stl">RAR</uzo>
    <snc mrk="gir.0i.KOMUNE">
    <dif>
      <ref tip="super" cel="mov.0igxi.ien">Movi&gcirc;i</ref> la&ubreve; cirkla a&ubreve; spirala kurbo;
      <ref tip="sin" cel="ir.rond0i.lauxrondo">rondiri<sncref/></ref>:
      <ekz>
        estis senvente, la kolomboj ludeme <tld/>adis super la domo
        <fnt>
          <aut>J. Dorosmai, trad. J. Dorosmai jun. kaj J. Horvath</aut>
          <vrk>Fabloj kaj Aforismoj</vrk>
          <lok>2002</lok>
        </fnt>;
      </ekz>
      <ekz>
        ili <klr>[&#x2026;]</klr> komencis per speciala movo <tld/>i la supran 
        korpoparton
        <fnt>
          <bib>Salamandroj</bib>,
          <lok>libro 1a, &ccirc;apitro 8a</lok>
        </fnt>.
      </ekz>
    </dif>    
    <refgrp tip="vid">
       <ref cel="turn.0igxi.alidirektigxi">turni&gcirc;i<sncref/></ref>,
       <ref cel="spiral.0i">spirali</ref>,
       <ref cel="rotaci.0i">rotacii</ref>,
       <ref cel="rivolu.0i">rivolui</ref>,
       <ref cel="sving.0i">svingi</ref>,
       <ref cel="balanc1.0igxi">balanci&gcirc;i</ref>
    </refgrp>
    <trdgrp lng="de">
      <trd>Schleifen <ind>drehen</ind></trd>,
      <trd>wenden</trd>
    </trdgrp>
    <trdgrp lng="fr">
      <trd>tournoyer</trd>,
      <trd>virer</trd>
    </trdgrp>
    <trd lng="es">girar</trd>
  </snc>
  <snc mrk="gir.0i.AVI">
    <uzo tip="fak">SHI</uzo><uzo tip="fak">AVI</uzo>
    <dif>
      <ref tip="super" cel="turn.0igxi">Turni&gcirc;i</ref> &ccirc;irka&ubreve; la vertikala akso 
      de la veturilo (&scirc;ipo, aviadilo):
      <ekz>
        <nom>M/S Atl&#x1FF;y</nom> jam sukcesis pene <tld/>i 180 gradojn
        sur la malvasta fjordo kaj nun disa&ubreve;digas hupsonon
        <fnt>
          <aut>S. Johansson</aut>,
          <vrk>El ombro de l' tempo</vrk>,
          <lok>2017</lok>
        </fnt>;
      </ekz>
      <ekz>
        la nadlo de mia interna kompaso komencis <tld/>i freneze
        <fnt>
          <bib>Kon11</bib>
          <vrk>Blogo de &scirc;iprompulo</vrk>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
       <ref cel="driv.0i">drivi</ref>,
       <ref cel="jor.0i">jori</ref>,
       <ref cel="girosk.0o">giroskopo</ref>,
       <ref cel="rul.0igxi.MAR">ruli&gcirc;i<sncref/></ref>,
       <ref cel="sxance.0igxi.MOV">&scirc;anceli&gcirc;i<sncref/></ref>,
       <ref cel="tang.0i.MAR">tangi<sncref/></ref>
    </refgrp>
    <bld lok="&WCU;/thumb/d/d0/Achsen_Schiffsbewegung.svg/640px-Achsen_Schiffsbewegung.svg.png" prm="CC BY-SA 3.0" lrg="640">rotaciaj movoj de &scirc;ipo: (x) ruli&gcirc;i, (y) tangi, (z) giri, jori
        <fnt>
          <aut>ThoKay, propra verko</aut>
          <lok><url ref="&WCW;/File:Achsen_Schiffsbewegung.svg">&WCW;/File:Achsen_Schiffsbewegung.svg</url></lok>
        </fnt>
    </bld>
    <trdgrp lng="de">
      <trd>gieren</trd>,
      <trd>schlingern</trd>
    </trdgrp>
    <trd lng="en">yaw</trd>
    <trd lng="fr">lacet</trd>
    <trd lng="nl">gieren</trd>
    <trd lng="ru">&c_r;&c_y;&#x301;&c_s;&c_k;&c_a;&c_n;&c_i;&c_je;</trd>
  </snc>
  <trdgrp lng="uk">
    <trd>&#x43A;&#x440;&#x443;&#x436;&#x43B;&#x44F;&#x442;&#x438;</trd>,
    <trd>&#x43E;&#x431;&#x435;&#x440;&#x442;&#x430;&#x442;&#x438;&#x441;&#x44F;</trd>,
    <trd>&#x432;&#x435;&#x440;&#x442;&#x456;&#x442;&#x438;&#x441;&#x44F;</trd>,
    <trd>&#x43A;&#x440;&#x443;&#x442;&#x438;&#x442;&#x438;&#x441;&#x44F;</trd>
  </trdgrp>
</drv>
</art>

