<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>ekspekt</rad>/o
</kap>
<drv mrk="ekspek.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      <klr>(de <ref cel="variab.hazarda0o">hazarda variablo</ref> <frm>X</frm>,
      kadre de la <ref cel="spac.probablo0o">probablospaco</ref>
      <frm>(<g>&Omega;</g>,<g>A</g>,P)</frm>)</klr>
      La <ref cel="integr2.lebega0o">lebega integralo</ref> de <frm>X</frm> 
      sur <frm><g>&Omega;</g></frm> rilate al mezuro <frm>P</frm>;
      simb. <frm>E(X) = &#x222b;XdP = 
      &#x222b;<k>x</k>dP<sub>X</sub>(<k>x</k>)</frm>:
      <ekz>
        la <tld/>o estas la <ref cel="momant.noa0o">unua momanto</ref>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Erwartungswert</trd>
  <trd lng="en">expectation<klr tip="ind"> (of a random variable)</klr></trd>
  <trd lng="fr">esp&eacute;rance math&eacute;matique</trd>
  <trd lng="pl">warto&sacute;&cacute; oczekiwana<klr tip="ind"> (zmiennej losowej)</klr></trd>
  <trd lng="ru">&c_m;&c_a;&c_t;&c_je;&c_m;&c_a;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_o;&c_je; <ind>&c_o;&c_zh;&c_i;&c_d;&c_a;&c_n;&c_i;&c_je;</ind></trd>
</drv>
</art>

