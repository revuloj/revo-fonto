<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <rad>peon</rad>/o
    </kap>
    <drv mrk="peon.0o">
      <kap><tld/>o</kap>
      <uzo tip="fak">SPO</uzo>
      <snc>
        <dif>
          &Ccirc;iu el la <frm>8+8</frm> plej malaltrangaj 
          <ref tip="super" cel="sxak.0peco">&scirc;akpecoj</ref>:
          <ekz>
            <tld/>o atinginta la lastan
            <ref cel="horizo1.0o.linio">horizontalon</ref>
            figuri&gcirc;as
            <klr>(estas promociata al la&ubreve;vola
              <ref cel="figur.0o.sxaka">figuro</ref>)</klr>
          </ekz>
        </dif>
        <rim>
          <tld lit="P"/>o simbole prezentas
          <ref cel="soldat.0o">soldaton</ref> kaj funkcie similas
          <ref cel="disk.0o.diversa">diskon</ref> en damludo.
        </rim>
      </snc>
      <trd lng="be">&c_p;&c_je;&c_sh;&c_k;&c_a;</trd>
      <trd lng="en">pawn</trd>
      <trd lng="es">pe&oacute;n</trd>
      <trd lng="fr">pion</trd>
      <trdgrp lng="hu">
        <trd>gyalog <klr tip="ind">(sakk)</klr></trd>,
        <trd>paraszt <klr tip="ind">(sakk)</klr></trd>
      </trdgrp>
      <trd lng="nl">pion</trd>
      <trdgrp lng="pl">
        <trd>pion</trd>,
        <trd>pionek</trd>
      </trdgrp>
      <trd lng="ru">&c_p;&c_je;&c_sh;&c_k;&c_a;</trd>
    </drv>
  </art>
