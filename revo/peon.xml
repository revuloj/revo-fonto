<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: peon.xml,v 1.22 2024/02/17 06:43:06 revo Exp $">
  <kap>
    <rad>peon</rad>/o
  </kap>
<drv mrk="peon.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">SPO</uzo>
  <snc mrk="peon.0o.sxakpeco">
    <dif>
      &Ccirc;iu el la <frm>8+8</frm> plej malaltrangaj 
      <ref tip="super" cel="sxak.0peco">&scirc;akpecoj</ref>:
      <ekz>
        <tld/>o atinginta la lastan
        <ref cel="horizo1.0o.linio">horizontalon</ref>
        figuri&gcirc;as
        <klr>(estas promociata al la&ubreve;vola
          <ref cel="figur.0o.sxaka">figuro</ref>)</klr>;
      </ekz>
      <ekz>
        mi anta&ubreve;enpa&scirc;is per <tld/>o kaj fingromontris, ke nun sekvas li, li simple
        prenis mian re&gcirc;on, metis &gcirc;in flanken
        <fnt>
          <bib>VaK</bib>
          <lok>Kvina &Ccirc;apitro</lok>
        </fnt>;
      </ekz>
      <ekz>
        tri blankaj <tld/>oj, landskne&hcirc;toj kun halebardo, perplekse rigardis la kurieron
        <fnt>
          <bib>MkM</bib>
          <lok>22</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="hom" cel="peon1.0o">peono (terlaboristo)</ref>
    <rim>
      <tld lit="P"/>o simbole prezentas
      <ref cel="soldat.0o">soldaton</ref> kaj funkcie similas
      <ref cel="disk.0o.diversa">diskon</ref> en damludo.
    </rim>
  </snc>
  <trd lng="be">&c_p;&c_je;&c_sh;&c_k;&c_a;</trd>
  <trd lng="bg">&c_p;&c_je;&c_sh;&c_k;&c_a;</trd>
  <trd lng="cs">peon</trd>
  <trd lng="de">Bauer</trd>
  <trd lng="en">pawn</trd>
  <trd lng="es">pe&oacute;n</trd>
  <trdgrp lng="fa">
        <trd>&f_p;&f_y;&a_A;&a_d;&a_h;<klr tip="ind"> (&a_sh;&a_T;&a_r;&a_n;&a_j;)</klr></trd>,
        <trd>&a_s;&a_r;&a_b;&a_A;&a_z;<klr tip="ind"> (&a_sh;&a_T;&a_r;&a_n;&a_j;)</klr></trd>
      </trdgrp>
  <trd lng="fr">pion</trd>
  <trdgrp lng="hu">
        <trd>gyalog <klr tip="ind">(sakk)</klr></trd>,
        <trd>paraszt <klr tip="ind">(sakk)</klr></trd>
      </trdgrp>
  <trd lng="it">pedone<klr> (scacchi)</klr></trd>
  <trdgrp lng="ja">
    <trd>&#x30DD;&#x30FC;&#x30F3;</trd>,
    <trd>&#x6B69;&#x5175;  <pr>&#x304B;&#x3061;&#x3044;&#x304F;&#x3055;</pr></trd>,
    <trd>&#x8FB2;&#x5834;&#x52B4;&#x50CD;&#x8005;  <pr>&#x306E;&#x3046;&#x3058;&#x3087;&#x3046;&#x308D;&#x3046;&#x3069;&#x3046;&#x3057;&#x3083;</pr></trd>,
    <trd>&#x30DA;&#x30AA;&#x30F3;</trd>
  </trdgrp>
  <trd lng="nl">pion</trd>
  <trdgrp lng="pl">
        <trd>pion</trd>,
        <trd>pionek</trd>
      </trdgrp>
  <trd lng="ru">&c_p;&c_je;&c_sh;&c_k;&c_a;</trd>
  <trd lng="sk">pe&scaron;iak</trd>
  <trdgrp lng="uk">
    <trd>&c_p;&c_je;&c_o;&c_n; (&c_n;&c_a;&c_j;&c_m;&c_i;&c_t;)</trd>,
    <trd>&c_p;&c_ib;&c_sh;&c_a;&c_k; (&c_u; &c_sh;&c_a;&c_h;&c_a;&c_h;)</trd>,
    <trd>&c_sh;&c_a;&c_sh;&c_k;&c_a;</trd>
  </trdgrp>
  <trd lng="zh">&#x5C0F;&#x5352; <pr>xi&#x1CE;oz&#xFA;</pr></trd>
</drv>
