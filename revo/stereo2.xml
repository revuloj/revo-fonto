    <trd>&#x7ACB;&#x4F53;&#x93E1;  <pr>&#x308A;&#x3063;&#x305F;&#x3044;&#x304D;&#x3087;&#x3046;</pr></trd>,
    <trd>&#x5B9F;&#x4F53;&#x93E1;  <pr>&#x3058;&#x3063;&#x305F;&#x3044;&#x304D;&#x3087;&#x3046;</pr></trd>,
    <trd>&#x30B9;&#x30C6;&#x30EC;&#x30AA;&#x30B9;&#x30B3;&#x30FC;&#x30D7;</trd>
  </trdgrp>
  <trd lng="nl">stereoscoop</trd>
  <trd lng="pl">stereoskop</trd>
  <trd lng="ru">&c_s;&c_t;&c_je;&c_r;&c_je;&c_o;&c_s;&c_k;&c_o;&c_p;</trd>
