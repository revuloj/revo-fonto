<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <rad>Mahajan</rad>/o <fnt><bib>PIV1</bib></fnt>
    </kap>

    <drv mrk="mahajan.0o">
      <kap><tld/>o</kap>
      <snc mrk="mahajan.0o.BUD">
        <uzo tip="fak">BUD</uzo>
        <dif>
          Komuna nomo de la
          <ref tip="malprt" cel="buda.0ismo.BUD">budaismaj</ref>
          skoloj nuntempe precipe de &Ccirc;inujo, Japanujo, Koreujo, kiuj
          agnoskas bodisatvojn, universalan kompaton, helpon inter
          vivuloj por atingi savi&gcirc;on:
          <ekz>
            tiu, kiu la&ubreve;degas doktrinon de <tld/>o...
            <fnt>
              <aut>trad. Asano San&ccirc;i</aut>,
              <vrk><url 
 ref="http://www.ebudhano.cn/esperanto/sutro/guanjin/guanjing.htm"
                  >Amitajur Djana Sutro, 14:1</url></vrk>,
              <lok>La Japana Budhano, 1993-04, numero 264a</lok>
            </fnt>;
          </ekz><ekz>
            en la unua jarcento <tld lit="m"/>o enkonduki&gcirc;is en la 
            regionojn lo&gcirc;atajn de hanoj, &ccirc;efaj lo&gcirc;antoj de &Ccirc;inio
            <fnt>
              <aut>-</aut>,
              <vrk><url ref="http://www.chinareport.com.cn/uk2004/e10-20.htm"
                  >Religioj</url></vrk>,
              <lok>89-a Universala Kongreso, Pekino, 2004</lok>
            </fnt>.
          </ekz>
        </dif>
      </snc>
      <trd lng="de">Mahayana</trd>
      <trd lng="fr">Mah&acirc;y&acirc;na</trd>
      <trd lng="it">Mah&#257;y&#257;na</trd>
      <trd lng="ru">&c_m;&c_a;&c_h;&c_a;&c_ja;&c_n;&c_a;</trd>
    </drv>

    <drv mrk="mahajan.0a">
      <kap><tld lit="m"/>a</kap>
      <snc mrk="mahajan.0a.BUD">
        <dif>
          Apartenanta al <tld/>o, al &gcirc;ia doktrino.
        </dif>
      </snc>
      <trd lng="ru">&c_m;&c_a;&c_h;&c_a;&c_ja;&c_n;&c_s;&c_k;&c_i;&c_j;</trd>
    </drv>
  </art>

