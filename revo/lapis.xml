<kap>
  <ofc>2</ofc>
  <rad>lapis</rad>/o
<fnt><bib>JED</bib></fnt></kap>
<drv mrk="lapis.0o">
  <kap>
    <tld/>o
  </kap>
  <snc mrk="lapis.0o.MIN">
  <uzo tip="fak">MIN</uzo>
    <dif>
      Solida ar&gcirc;enta <ref tip="super" cel="nitrat.0o">nitrato</ref>,
      uzata kiel ka&ubreve;terizilo, kaj anka&ubreve; nomata infera &scirc;tono:
      <ekz>
        Vincento <klr>[&#8230;]</klr> kirlis super fajro magiajn
        dekoktojn el pe&ccirc;o, sulfuro,
        valeriano, mandragoro, bistorto, centa&ubreve;reo, ononiso kaj
        asafetido, el akso&scirc;mira&jcirc;o kaj <tld/>o kaj akvoforto kaj kaproglobetoj
        <fnt>
          <aut>Karel &Ccaron;apek, trad. Josef Vondrou&scaron;ek</aut>
          <vrk><url ref="esperanto.blahus.cz/subtekstoj/NAUFABEL.DOC">Granda Doktora Fabelo</url></vrk>
        </fnt>;
      </ekz>
      <ekz>
        <tld/>o estas aplikata al monbiletoj por trovi rabistoj, kies
        ha&ubreve;te nigri&gcirc;as
        nelaveble &ccirc;e ektu&scirc;o.
      </ekz>
    </dif>
  </snc>
  <rim>
    La&#365; <fnt><bib>BL</bib></fnt>: Anka&#365; eblas diri <ke>ar&#285;enta nitrato</ke>.
  </rim>

  <trd lng="be">&c_l;&c_ja;&c_p;&c_ib;&c_s;</trd>
  <trd lng="ca">nitrat de plata</trd>
  <trdgrp lng="de">
     <trd>H&ouml;llenstein</trd>,
     <trd>Silbernitrat</trd>
  </trdgrp>
  <trd lng="en">lunar caustic</trd>
  <trd lng="es">nitrato de plata</trd>
  <trd lng="fr">nitrate d'argent</trd>
  <trdgrp lng="hu">
    <trd>ez&uuml;stnitr&aacute;t</trd>,
    <trd>pokolk&odblac;</trd>
  </trdgrp>
  <trd lng="ja">&#30813;&#37240;&#37504;&#26834;  <pr>&#12375;&#12423;&#12358;&#12373;&#12435;&#12366;&#12435;&#12412;&#12358;</pr></trd>
  <trdgrp lng="nl">
    <trd>lapis</trd>,
    <trd>helse <ind>steen</ind></trd>
  </trdgrp>
  <trd lng="pl">lapis</trd>
  <trd lng="pt">l&aacute;pis infernal</trd>
  <trdgrp lng="ro">
    <trd>azotat de argint</trd>,
    <trd>piatra iadului</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_l;&c_ja;&c_p;&c_i;&c_s;</trd>,
    <trd>&c_n;&c_i;&c_t;&c_r;&c_a;&c_t; &c_s;&c_je;&c_r;&c_je;&c_b;&c_r;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_l;&c_ja;&c_p;&c_ib;&c_s;</trd>,
    <trd>&c_a;&c_z;&c_o;&c_t;&c_n;&c_o;&c_k;&c_i;&c_s;&c_l;&c_je; &c_s;&c_r;&c_ib;&c_b;&c_l;&c_o;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#30813;&#37240;&#37504; <pr>xi&#257;osu&#257;ny&#237;n</pr></trd>,
    <trd>&#30813;&#37240;&#38134; <pr>xi&#257;osu&#257;ny&#237;n</pr></trd>
  </trdgrp>
</drv>
</art>
