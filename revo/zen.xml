<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: zen.xml,v 1.19 2023/10/21 20:03:08 revo Exp $">
<kap>
  <rad>zen</rad>/o <fnt><bib>EncJap</bib></fnt>
</kap>
<drv mrk="zen.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">BUD</uzo>
  <snc>
    <dif>
      &Ccirc;indevena, ekde 1192 japana, <ref tip="super" cel="buda.0ismo">budaisma</ref>
      <ref tip="super" cel="skol.0o">skolo</ref> favoranta
      personan, intuan sperton pli ol tradicion kaj raciemon,
      konata anka&ubreve; pro sobrisma influo al japanaj artoj:
      <ekz>
        dum la festivalo eblas viziti <tld lit="Z"/>-&gcirc;ardenon a&ubreve; &ccirc;eesti kurseton pri
        bonsajo-arbetoj
        <fnt>
          <bib>Monato</bib>
          <aut>Garvan Makaj</aut>
          <vrk><url ref="&Monato;/2010/010132.php">Monda kulturo apud la maro</url></vrk>
          <lok>2010</lok>
        </fnt>;
      </ekz>
      <ekz>
        en usona <tld/>-centro instruisto estis invitita por doni kurson
        <fnt>
          <bib>Monato</bib>
          <aut>Christian Declerck</aut>
          <vrk>Spirituala materialismo</vrk>
          <lok>2009</lok>
        </fnt>;
      </ekz>
      <ekz>
        de la &ccirc;ina sektofondinto <nom>K&#x2019;uoan</nom> aperis la <tld/>-a verko La Dek Bildoj de
        Bovpa&scirc;tado
        <fnt>
          <bib>EeP</bib>
          <lok>Dua Parto</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_d;&c_z;&c_e;&c_n;</trd>,
    <trd>&c_d;&c_z;&c_e;&c_n;-&c_b;&c_u;&c_d;&c_y;&c_z;&c_m;</trd>
  </trdgrp>
  <trd lng="bg">&c_z;&c_je;&c_n;</trd>
  <trd lng="ca">zen</trd>
  <trdgrp lng="cs">
    <trd>zen</trd>,
    <trd>zenov&yacute; buddhismus</trd>
  </trdgrp>
  <trd lng="de">Zen</trd>
  <trd lng="en">Zen</trd>
  <trd lng="es">zen</trd>
  <trdgrp lng="fr">
    <trd>zen<klr> (subst.)</klr></trd>
  </trdgrp>
  <trd lng="hu">zen</trd>
  <trd lng="it">zen<klr> (filosofia/dottrina)</klr></trd>
  <trd lng="ja">&#x7985;  <pr>&#x305C;&#x3093;</pr></trd>
  <trdgrp lng="pt">
    <trd>zen</trd>,
    <trd>zen-budismo</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_d;&c_z;&c_je;&c_n;</trd>,
    <trd>&c_d;&c_z;&c_je;&c_n;-&c_b;&c_u;&c_d;&c_d;&c_i;&c_z;&c_m;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>zen</trd>,
    <trd>zenov&yacute; budhizmus</trd>
  </trdgrp>
  <trd lng="uk">&c_d;&c_z;&c_je;&c_n;</trd>
  <trdgrp lng="zh">
    <trd>&#x7985;</trd>,
    <trd><klr>tr. </klr>&#x79AA;<klr> [ch&aacute;n]</klr></trd>
  </trdgrp>
</drv>

<drv mrk="zen.0ismo">
  <kap><tld/>ismo</kap>
  <snc>
    <dif>
      Praktikado de la <tld/>a vojo de budaismo:
      <ekz>
        Daitoo-Koku&scirc;i (1282-1337), japana fama bonzo de <tld/>ismo kaj
        fondinto de Daitoku-templo
        <fnt><bib>EncJap</bib>, <lok>artikolo
&leftquot;&ccirc;anojo&rightquot;, p.
        35-36a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_d;&c_z;&c_e;&c_n;-&c_b;&c_u;&c_d;&c_y;&c_z;&c_m;</trd>
  <trd lng="ca">pr&agrave;ctica zen</trd>
  <trd lng="de">Zazen</trd>
  <trdgrp lng="fr">
    <trd>zen<klr> (subst.)</klr></trd>
  </trdgrp>
  <trd lng="hu">zen buddhizmus</trd>
  <trd lng="ja">&#x7985;&#x5B97;  <pr>&#x305C;&#x3093;&#x3057;&#x3085;&#x3046;</pr></trd>
  <trdgrp lng="pt">
    <trd>zen</trd>,
    <trd>zen-budismo</trd>
  </trdgrp>
  <trd lng="ru">
&c_d;&c_z;&c_je;&c_n;-&c_b;&c_u;&c_d;&c_d;&c_i;&c_z;&c_m;</trd>
  <trd lng="sk">zen</trd>
  <trd lng="it">zen <klr>(pratica religiosa)</klr></trd>
</drv>
</art>

