  </trdgrp>
  <trd lng="ru">&c_m;&c_o;&c_t;&c_i;&c_v;</trd>
  <trdgrp lng="sk">
    <trd>d&ocirc;vod</trd>,
    <trd>podnet</trd>,
    <trd>pohn&uacute;tka</trd>,
    <trd>popud</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_m;&c_o;&c_t;&c_i;&c_v;</trd>,
    <trd>&c_p;&c_r;&c_i;&c_v;&c_ib;&c_d;</trd>
  </trdgrp>
