<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
   <ofc>1</ofc>
   <rad>motiv</rad>/o
</kap>
<drv mrk="motiv.0o">
   <kap><tld/>o</kap>
   <snc>
     <dif>
       Tio, kio igas iun agi a&ubreve; opinii iamaniere; kialo:
       <ekz>
         estas nenia <tld/>o por malaperi;
       </ekz>
       <ekz>
         sen<tld/>e koleri.
       </ekz>
     </dif>
     <trdgrp lng="en">
       <trd>motivation</trd>,
       <trd>cause</trd>,
       <trd>incentive</trd>,
       <trd>reason</trd>,
       <trd>goal</trd>,
       <trd>purpose</trd>
     </trdgrp>
   </snc>
   <snc mrk="motiv.0o.MUZ">
     <uzo tip="fak">MUZ</uzo>
     <dif>
       La malplej granda memstara unuo de muzika formo.
     </dif>
     <refgrp tip="super">
       <ref cel="melodi.0o">melodio</ref>
     </refgrp>
     <trd lng="en">motif</trd>
   </snc>
   <trd lng="be">&c_m;&c_a;&c_t;&c_y;&c_w;</trd>
   <trd lng="cs">motiv</trd>
   <trd lng="en">motive</trd>
   <trd lng="nl">motief</trd>
   <trd lng="ru">&c_m;&c_o;&c_t;&c_i;&c_v;</trd>
   <trd lng="fr">motif</trd>
</drv>

<drv mrk="motiv.0i">
   <kap><tld/>i<fnt>Z</fnt></kap>
   <gra><vspec>tr</vspec></gra>
   <snc>
     <uzo tip="klr">(io)</uzo>
     <dif>
       Esti <tld/>o por pravigo de io:
       <ekz>
         tiu akcidento <tld/>as mian proponon.
       </ekz>
     </dif>
     <trd lng="be">&c_m;&c_a;&c_t;&c_y;&c_v;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
     <trd lng="en">motivate</trd>
     <trd lng="fr">motiver
       <klr>au sens de : &ecirc;tre le motif de</klr></trd>
     <trd lng="nl">rechtvaardigen</trd>
     <trd lng="ru">&c_m;&c_o;&c_t;&c_i;&c_v;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
   </snc>
</drv>

<drv mrk="motiv.0igi">
   <kap><tld/>(ig)i</kap>
   <uzo tip="klr">(iu)</uzo>
   <snc>
     <dif>
       Pravigi ion per:
       <ekz>
         &ccirc;iu povas <tld/>i sian
         proponon<fnt>Z</fnt>;
       </ekz>
       <ekz>
         plene <tld/>igita plendo.
       </ekz>
     </dif>
   </snc>
   <trd lng="be">&c_m;&c_a;&c_t;&c_y;&c_v;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
   <trd lng="en">justify</trd>
   <trd lng="fr">motiver
     <klr>au sens de : justifier par des motifs</klr></trd>
   <trd lng="nl">motiveren</trd>
   <trd lng="ru">&c_m;&c_o;&c_t;&c_i;&c_v;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
</drv>
</art>
