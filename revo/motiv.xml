    <trd>&#x6839;&#x62E0;  <pr>&#x3053;&#x3093;&#x304D;&#x3087;</pr></trd>,
    <trd>&#x30E2;&#x30C1;&#x30FC;&#x30D5;</trd>,
    <trd>&#x4E3B;&#x984C;  <pr>&#x3057;&#x3085;&#x3060;&#x3044;</pr></trd>
  </trdgrp>
  <trd lng="nl">motief</trd>
