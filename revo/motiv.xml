</drv>

<drv mrk="motiv.0i">
   <kap><tld/>i</kap>
   <gra><vspec>tr</vspec></gra>
   <snc mrk="motiv.0i.io">
     <uzo tip="klr">(io)</uzo>
     <dif>
       Esti <tld/>o por pravigo de io:
       <ekz>
         tiu akcidento <tld/>as mian proponon;
       </ekz><ekz>
          la amikoj volu sendi al mi kiom eble pli <tld/>ite siajn opiniojn pri la
          diversaj punktoj
          <fnt>
            <aut>&Z;</aut>
            <vrk><url ref="&Tekstaro;?nomo=reformoj-esperanto&amp;id=cc60&amp;serchesprimo=motivi&amp;tuj=1#cc60">Pri
            Reformoj en Esperanto</url></vrk>
            <lok>1894</lok>
          </fnt>.
        </ekz>
     </dif>
     <trd lng="be">&c_s;&c_l;&c_u;&c_zh;&c_y;&c_c;&c_mol; <ind>&c_m;&c_a;&c_t;&c_y;&c_v;&c_a;&c_m;</ind></trd>
     <trd lng="de">ein Motiv haben</trd>
     <trd lng="en">motivate</trd>
     <trd lng="fr">motiver<klr> (&ecirc;tre le motif de)</klr></trd>
     <trd lng="nl">rechtvaardigen</trd>
     <trd lng="ru">&c_m;&c_o;&c_t;&c_i;&c_v;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
   </snc>
   <snc mrk="motiv.0i.iu">
     <uzo tip="klr">(iu)</uzo>
     <dif>
        <ref tip="dif" cel="motiv.0igi.KOMUNE">Motivigi</ref>:
        <ekz>
          la usona registaro false provis <tld/>i la militon
          <fnt>
            <bib>Monato</bib>
            <aut>Bertil Englund</aut>
            <vrk><url ref="&Monato;/2004/008274.html">Mi plu abonos Monaton</url></vrk>
            <lok>2004</lok>
          </fnt>;
        </ekz><ekz>
          Moskvo vivas sen iu ajn science <tld/>ita plano
          <fnt>
            <bib>Monato</bib>
            <aut>Mihail Korotkov</aut>
            <vrk><url ref="&Monato;/2011/010465.php">Bridi la monstron</url></vrk>
            <lok>2011</lok>
          </fnt>.
        </ekz>
     </dif>
     <trdgrp lng="be">
       <trd>&c_m;&c_a;&c_t;&c_y;&c_v;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
       <trd>&c_a;&c_b;&c_g;&c_r;&c_u;&c_n;&c_t;&c_o;&c_w;&c_v;&c_a;&c_c;&c_mol;</trd>,
       <trd>&c_a;&c_p;&c_r;&c_a;&c_w;&c_d;&c_v;&c_a;&c_c;&c_mol; <klr tip="amb">(&c_d;&c_a;&c_v;&c_a;&c_c;&c_mol; &c_m;&c_a;&c_t;&c_y;&c_w;)</klr></trd>
     </trdgrp>
     <trd lng="de">rechtfertigen</trd>
     <trd lng="en">justify</trd>
     <trd lng="fr">motiver<klr> (justifier par des motifs)</klr></trd>
   </snc>
  <trdgrp lng="cs">
    <trd>b&yacute;t d&uring;vodem</trd>,
    <trd>motivovat</trd>,
    <trd>od&uring;vodnit</trd>,
    <trd>zd&uring;vodnit</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x52D5;&#x6A5F;&#x4ED8;&#x3051;&#x308B;  <pr>&#x3069;&#x3046;&#x304D;&#x3064;&#x3051;&#x308B;</pr></trd>,
    <trd>&#x7406;&#x7531;&#x4ED8;&#x3051;&#x308B;  <pr>&#x308A;&#x3086;&#x3046;&#x3064;&#x3051;&#x308B;</pr></trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>argumentowa&cacute;</trd>,
    <trd>umotywowa&cacute;</trd>,
    <trd>t&lstroke;umaczy&cacute;</trd>
  </trdgrp>
  <trdgrp lng="ro">
    <trd>argumenteaz&abreve;</trd>,
    <trd>justific&abreve;</trd>,
    <trd>explic&abreve;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>motivova&tcaron;</trd>,
    <trd>od&ocirc;vodni&tcaron;</trd>,
    <trd>zd&ocirc;vodni&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_m;&c_o;&c_t;&c_i;&c_v;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_p;&c_o;&c_ja;&c_s;&c_n;&c_ju;&c_v;&c_a;&c_t;&c_i; &c_p;&c_r;&c_i;&c_ch;&c_i;&c_n;&c_u;</trd>,
    <trd>&c_p;&c_r;&c_i;&c_v;&c_ib;&c_d;</trd>,
    <trd>&c_o;&c_b;&c_gu;&c_r;&c_u;&c_n;&c_t;&c_o;&c_v;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>
  </trdgrp>
</drv>

<drv mrk="motiv.0igi">
   <kap><tld/>igi</kap>
   <uzo tip="klr">(iu)</uzo>
   <snc mrk="motiv.0igi.KOMUNE">
     <dif>
       <ref tip="super" cel="prav.0igi">Pravigi</ref> ion per:
       <ekz>
         plene <tld/>igita plendo;
       </ekz><ekz>
        li per persista demandado kaj analizo <klr>[&#x2026;]</klr> de homaj rilatoj kaj
        <tld/>igoj, faras siajn hipotezojn kaj konkludojn
        <fnt>
          <bib>Monato</bib>
          <aut>Stefan Macgill</aut>
          <vrk><url ref="&Monato;/2004/008023.html">Pli da kadavroj</url></vrk>
          <lok>2004</lok>
        </fnt>;
       </ekz><ekz>
        la vjetnama milito estis &ccirc;iurilate misa, mis<tld/>igita, misintencita, neniel
        kaj nenial pravigebla
        <fnt>
          <bib>Monato</bib>
          <aut>Donald Broadribb</aut>
          <vrk><url ref="&Monato;/2005/008073.php">Popolo suferinta pro agresemo de
          aliaj</url></vrk>
          <lok>2005</lok>
        </fnt>.
       </ekz>
     </dif>
   </snc>
     <trdgrp lng="be">
       <trd>&c_m;&c_a;&c_t;&c_y;&c_v;&c_a;&c_v;&c_a;&c_c;&c_mol;</trd>
       <trd>&c_a;&c_b;&c_g;&c_r;&c_u;&c_n;&c_t;&c_o;&c_w;&c_v;&c_a;&c_c;&c_mol;</trd>,
       <trd>&c_a;&c_p;&c_r;&c_a;&c_w;&c_d;&c_v;&c_a;&c_c;&c_mol; <klr tip="amb">(&c_d;&c_a;&c_v;&c_a;&c_c;&c_mol; &c_m;&c_a;&c_t;&c_y;&c_w;)</klr></trd>
     </trdgrp>
  <trdgrp lng="cs">
    <trd>motivovat</trd>,
    <trd>od&uring;vodnit</trd>
  </trdgrp>
  <trd lng="de">rechtfertigen</trd>
  <trd lng="en">justify</trd>
  <trd lng="fr">motiver<klr> (justifier par des motifs)</klr></trd>
  <trdgrp lng="ja">
    <trd>&#x52D5;&#x6A5F;&#x4ED8;&#x3051;&#x308B;  <pr>&#x3069;&#x3046;&#x304D;&#x3064;&#x3051;&#x308B;</pr></trd>,
    <trd>&#x7406;&#x7531;&#x4ED8;&#x3051;&#x308B;  <pr>&#x308A;&#x3086;&#x3046;&#x3064;&#x3051;&#x308B;</pr></trd>
  </trdgrp>
  <trd lng="nl">motiveren</trd>
  <trdgrp lng="pl">
    <trd>uzasadnia&cacute;</trd>,
    <trd>motywowa&cacute;</trd>,
    <trd>usprawiedliwia&cacute;</trd>
  </trdgrp>
  <trdgrp lng="ro">
    <trd>justifica</trd>,
    <trd>motiva</trd>
  </trdgrp>
  <trd lng="ru">&c_m;&c_o;&c_t;&c_i;&c_v;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  <trdgrp lng="sk">
    <trd>od&ocirc;vodni&tcaron;</trd>,
    <trd>zd&ocirc;vodni&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x4E0D;&#x8F9C;&#x8CA0; <pr>b&#xF9;g&#x16B;f&#xF9;</pr></trd>,
    <trd>&#x4E0D;&#x8F9C;&#x8D1F; <pr>b&#xF9;g&#x16B;f&#xF9;</pr></trd>,
    <trd>&#x8868;&#x660E;&#x81EA;&#x5DF1;&#x662F;&#x6B63;&#x786E; <pr>bi&#x1CE;om&#xED;ngz&#xEC;j&#x1D0;sh&#xEC;zh&#xE8;ngqu&#xE8;</pr></trd>,
    <trd>&#x8868;&#x660E;&#x81EA;&#x5DF1;&#x662F;&#x6B63;&#x78BA; <pr>bi&#x1CE;om&#xED;ngz&#xEC;j&#x1D0;sh&#xEC;zh&#xE8;ngqu&#xE8;</pr></trd>
