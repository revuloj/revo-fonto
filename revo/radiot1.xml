<kap>
  <rad>radiotelegrafi</rad>/o
</kap>
<drv mrk="radiot1.0o">
  <kap><tld/>o</kap>
  <snc>
  <uzo tip="fak">ELE</uzo>
    <dif>
      Telegrafa <ref tip="super" cel="sistem.0o.TEK">sistemo</ref>,
      kiu uzas la proprecojn de radioelektraj ondoj
      por la sendo de signoj:
      <ekz>
        la slovaka inventisto <nom>Jozef Murga&scaron;</nom> (1864 &ndash; 1929) <klr>[estis]</klr> pioniro de
        la <tld/>o
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=568166">26639 Murga&scaron;</url></lok>
        </fnt>;
      </ekz>
      <ekz>
        kvankam tutmonde uzata, CQD estis neniam elektita kiel internacia normo, dum la
        dua Internacia Kunveno pri <tld lit="R"/>o (Berlino, 1906), la germana
        alarmsignalo: &#8231;&#8231;&#8231; &dash; &dash; &dash; &#8231;&#8231;&#8231; (konata kiel SOS) estos adoptita
        <fnt>
          <bib>Viki</bib>
          <lok><url ref="https://eo.wikipedia.org/?curid=292437">CQD</url></lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_r;&c_a;&c_d;&c_y;&c_jo;&c_t;&c_e;&c_l;&c_je;&c_g;&c_r;&c_a;&c_f;&c_ib;&c_ja;</trd>
  <trd lng="de">Funktelegrafie</trd>
  <trd lng="fr">radiot&eacute;l&eacute;graphie</trd>
  <trdgrp lng="hu">
    <trd>r&aacute;di&oacute;t&aacute;v&iacute;r&aacute;s</trd>,
    <trd>r&aacute;di&oacute;telegr&aacute;fia</trd></trdgrp>
  <trd lng="nl">radiotelegrafie</trd>
  <trd lng="pl">radiotelegrafia</trd>
  <trd lng="pt">radiotelegrafia</trd>
  <trd lng="ro">radiotelegrafie</trd>
  <trd lng="ru">&c_r;&c_a;&c_d;&c_i;&c_o;&c_t;&c_je;&c_l;&c_je;&c_g;&c_r;&c_a;&c_f;&c_i;&c_ja;</trd>
  <trd lng="uk">&c_r;&c_a;&c_d;&c_ib;&#x43E;&c_t;&c_je;&#x43B;&c_je;&c_g;&c_r;&c_a;&c_f;&c_ib;&#x44F;</trd>
</drv>
