<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
  <art mrk="$Id$">
    <kap>
      <ofc>*</ofc>
      <rad>respond</rad>/i
    </kap>

    <drv mrk="respon.0i">
      <kap><ofc>*</ofc><tld/>i</kap>
      <gra><vspec>x</vspec></gra>
      <snc mrk="respon.0i.aldemando">
	<dif>
	  Doni informon petitan per demando; reagi al diro de alia
	  interparolanto en konversacio:
	  <ekz>
	    <tld/>i demandon<fnt>Z</fnt>,
	  </ekz><ekz>
	    al demando;
	  </ekz><ekz>
	    li <tld/>is, ke li akceptas.
	  </ekz>
	</dif>
	<trd lng="be">&c_a;&c_d;&c_k;&c_a;&c_z;&c_v;&c_a;&c_c;&c_mol;</trd>
	<trd lng="de">antworten</trd>
	<trdgrp lng="ru">
	  <trd>&c_o;&c_t;&c_v;&c_je;&c_t;&c_i;&c_t;&c_mol;</trd>,
	  <trd>&c_o;&c_t;&c_v;&c_je;&c_ch;&c_a;&c_t;&c_mol;</trd>
	</trdgrp>
      </snc>
      <snc mrk="respon.0i.reagi">
	<dif>
	  Reciproki:
	  <ekz>
	    la &scirc;ipoj <tld/>is la bombardadon;
	  </ekz><ekz>
	    <ind>sen<tld/>a amo</ind>.
	    <trd lng="de">unerwiderte <ind>Liebe</ind></trd>
	    <trd lng="ru">&c_b;&c_je;&c_z;&c_o;&c_t;&c_v;&c_je;&c_t;&c_n;&c_a;&c_ja; &c_l;&c_ju;&c_b;&c_o;&c_v;&c_mol;</trd>
	  </ekz>
	</dif>
	<trd lng="be">&c_a;&c_d;&c_k;&c_a;&c_z;&c_v;&c_a;&c_c;&c_mol;</trd>
	<trd lng="de">erwidern</trd>
	<trdgrp lng="ru">
	  <trd>&c_o;&c_t;&c_v;&c_je;&c_t;&c_i;&c_t;&c_mol;</trd>,
	  <trd>&c_o;&c_t;&c_v;&c_je;&c_ch;&c_a;&c_t;&c_mol;</trd>
	</trdgrp>
      </snc>
      <snc mrk="respon.0i.lauxi">
	<dif>
	  La&ubreve;i ion, kunakordi&gcirc;i kun io; esti konforma, simetria, proporcia je io; =
	  inter<tld/>i:
	  <ekz>
	    tiu libro <tld/>as &gcirc;eneralan bezonon, al &gcirc;enerala bezono;
	  </ekz><ekz>
	    tiu iniciato <tld/>is la revon de Z;
	  </ekz><ekz>
	    en la 19a jc la 1a de januaro de l' malnova rusa kalendaro
	    <tld/>is al la 13a de la kalendaro gregoria.
	  </ekz>
	</dif>
	<refgrp tip="sin">
	  <ref cel="kongru.0i">kongrui</ref>.
	</refgrp>
	<trd lng="be">&c_a;&c_d;&c_p;&c_a;&c_v;&c_ja;&c_d;&c_a;&c_c;&c_mol;</trd>
	<trd lng="ru">&c_s;&c_o;&c_o;&c_t;&c_v;&c_je;&c_t;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
      </snc>
      <snc mrk="respon.0i.responsi">
	<uzo tip="stl">ARK</uzo>
	<dif>
	  = <ref tip="dif" cel="respons.0i">Responsi</ref>:
	  <ekz>
	    ni ne <tld/>as por la konvinkoj nek agoj de li<fnt>Z</fnt>;
	  </ekz><ekz>
	    ni ne <tld/>as pri la enhavo de la reklamoj.
	  </ekz>
	</dif>
	<trdgrp lng="be">
      <trd>&c_a;&c_d;&c_k;&c_a;&c_z;&c_v;&c_a;&c_c;&c_mol;</trd>,
      <trd>&c_n;&c_je;&c_s;&c_mol;&c_c;&c_ib; &c_a;&c_d;&c_k;&c_a;&c_z;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
    </trdgrp>
	<trd lng="de">verantwortlich sein</trd>
	<trd lng="nl">verantwoordelijk zijn</trd>
      </snc>
      <trd lng="cs">odpov&ecaron;d&ecaron;t</trd>
      <trd lng="en">answer</trd>
      <trd lng="nl">antwoorden</trd>
      <trd lng="vo">lebl&uuml;d&ouml;n</trd>
    </drv>

    <drv mrk="respon.0o">
      <kap><tld/>o</kap>
      <snc>
	<dif>
	  Tio, kion oni <tld/>as:
	  <ekz>
	    pri tio &ccirc;i la historio donis jam perfekte trankviligan
	    <tld/>on<fnt>Z</fnt>.
	  </ekz>
	</dif>
      </snc>
      <trd lng="be">&c_a;&c_d;&c_k;&c_a;&c_z;</trd>
      <trd lng="de">Antwort</trd>
      <trd lng="en">answer</trd>
      <trd lng="nl">antwoord</trd>
      <trd lng="ru">&c_o;&c_t;&c_v;&c_je;&c_t;</trd>
      <trd lng="vo">lebl&uuml;d</trd>
    </drv>

    <drv mrk="respon.0a">
      <kap><tld/>a</kap>
      <snc mrk="respon.0a.KOMUNE">
	<dif>
	  Rilata al <tld/>o, <tld/>anta:
	  <ekz>
	    <tld/>a letero;
	  </ekz><ekz>
	    a&gcirc;o <tld/>a por la edzini&gcirc;o<fnt>Z</fnt>;
	  </ekz><ekz>
	    <uzo tip="stl">ARK</uzo>
	    la esperantismo kaj la esperantistoj ne povas esti
	    <tld/>aj <klr>(t.e. &leftquot;ne responsu&rightquot;)</klr> pri miaj personaj
	    ideoj kaj aspiroj<fnt>Z</fnt>.
	  </ekz>
	</dif>
	<trdgrp lng="be">
      <trd>&c_a;&c_d;&c_k;&c_a;&c_z;&c_n;&c_y;</trd>,
      <trd>&c_a;&c_d;&c_p;&c_a;&c_v;&c_je;&c_d;&c_n;&c_y;</trd>
    </trdgrp>
	<trdgrp lng="ru">
	  <trd>&c_o;&c_t;&c_v;&c_je;&c_t;&c_n;&c_y;&c_j;</trd>,
	  <trd>&c_s;&c_o;&c_o;&c_t;&c_v;&c_je;&c_t;&c_s;&c_t;&c_v;&c_u;&c_ju;&c_shch;&c_i;&c_j;</trd>
	</trdgrp>
      </snc>
      <snc mrk="respon.0a.angulo">
	<uzo tip="fak">MAT</uzo>
	<fnt><bib>MatVort</bib></fnt>
	<dif>
	  <klr>(p.p. <ref cel="angul.0o.figuro">anguloj</ref>)</klr>
	  Situantaj samflanke de rekto sekcanta du paralelajn rektojn, kaj
	  amba&ubreve; <ctl>sube</ctl> de la paraleloj a&ubreve;
	  <ctl>supere</ctl> de ili:
	  <ekz>
	    angulo <tld/>a al alia.
	  </ekz>
	</dif>
	<rim>
	  Kiel por la nocio de <ref cel="altern.0a.angulo">alternaj</ref>
	  anguloj, tiun difinon oni vastigas anka&ubreve; al la okazo, kiam
	  la du <ctl>unuaj</ctl> rektoj ne estas paralelaj.
	</rim>
	<bld tip="svg" lok="../bld/e_anguloj_respondaj.svg" lrg="300" alt="150">
	  anguloj kun samaj literoj estas <tld/>aj, 
	  &ccirc;u sube &dash; 
	  (&alfa;,&alfa;') kaj (&beta;,&beta;') &dash;, 
	  &ccirc;u supre &dash; 
	  (&gamma;,&gamma;') kaj (&delta;,&delta;')
	</bld>
	<trd lng="be">&c_a;&c_d;&c_p;&c_a;&c_v;&c_je;&c_d;&c_n;&c_y;</trd>
	<trd lng="cs">souhlasn&yacute;<klr tip="ind"> (&uacute;hel)</klr></trd>
	<trdgrp lng="de">
	  <trd>Gegen-<klr tip="amb">(winkel)</klr></trd>,
	  <trd>gleichliegend<klr tip="ind"> (-er Winkel)</klr></trd>
	</trdgrp>
	<trd lng="en">corresponding<klr tip="ind"> (angle)</klr></trd>
	<trd lng="fr"><klr tip="ind">(angle) </klr>correspondant</trd>
	<trd lng="pl"><klr tip="ind">(k&aogonek;t) </klr>odpowiadaj&aogonek;cy</trd>
	<trd lng="ru">&c_s;&c_o;&c_o;&c_t;&c_v;&c_je;&c_t;&c_s;&c_t;&c_v;&c_je;&c_n;&c_n;&c_y;&c_j;<klr tip="ind"> (&c_u; &c_g;&c_o;&c_l;)</klr></trd>
      </snc>
    </drv>

    <drv mrk="respon.0eco">
      <kap><tld/>eco</kap>
      <snc mrk="respon.0eco.intera">
	<dif>
	  Eco de io inter<tld/>a:
	  <ekz>
	    rimo estas ia <tld/>eco de sonoj.
	  </ekz>
	</dif>
	<trd lng="be">&c_a;&c_d;&c_p;&c_a;&c_v;&c_je;&c_d;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
	<trd lng="ru">&c_s;&c_o;&c_o;&c_t;&c_v;&c_je;&c_t;&c_s;&c_t;&c_v;&c_i;&c_je;</trd>
      </snc>
      <snc mrk="respon.0eco.responso">
	<dif>
	  = <ref tip="dif" cel="respons.0o">Responso</ref>:
	  <ekz>
	    mi prenas sur min la tutan <tld/>econ;
	  </ekz><ekz>
	    demeti de unuj &ccirc;iun <tld/>econ por la agoj de aliaj<fnt>Z</fnt>;
	  </ekz><ekz>
	    malakcepti la <tld/>econ pri io
	  </ekz>
	</dif>
	<refgrp tip="vid">
	  <ref cel="lav.0i">lavi</ref>.
	</refgrp>
	<rim>
	  &Ccirc;i tiu formo pa&ubreve;sas la formon de multaj naciaj lingvoj,
	  estas tradicia kaj Zamenhofa, tamen ja estas nelogika: la
	  rilato de la nocio al la ideo esprimata per la radiko estas
	  tiom malrekta ke la trafa rimedo por imiti la nacilingvajn
	  formojn estus uzi la sufikson <em>-um:</em> &leftquot;<tld/>umo&rightquot;.  Tiun formon
	  oni iam trovas, anka&ubreve; en verkoj de bonaj a&ubreve;toroj, tamen pli
	  ofta alternativo estas aparta radiko: responsi,
	  responsa kaj (malpli ofte), responso.
	  <aut>Sergio Pokrovskij</aut>
	</rim>
	<trd lng="be">&c_a;&c_d;&c_k;&c_a;&c_z;&c_n;&c_a;&c_s;&c_mol;&c_c;&c_mol;</trd>
	<trd lng="de">Verantwortung</trd>
	<trd lng="nl">verantwoordelijkheid</trd>
	<trd lng="ru">&c_o;&c_t;&c_v;&c_je;&c_t;&c_s;&c_t;&c_v;&c_je;&c_n;&c_n;&c_o;&c_s;&c_t;&c_mol;</trd>
      </snc>
    </drv>

    <drv mrk="respon.pri0i0eci0umi">
      <kap>pri<tld/>i, <tld/>eci, <tld/>umi</kap>
      <snc>
	<dif>
	  = <ref tip="dif" cel="respons.0i">Responsi</ref>.
	</dif>
	<refgrp tip="vid">
	  <ref cel="kacx.0o.konfuzo">ka&ccirc;o<sncref/></ref>,
	  <ref cel="kas.0o">kaso</ref>,
	  <ref cel="kulp.0o">kulpo</ref>.
	</refgrp>
      </snc>
    </drv>
  </art>
