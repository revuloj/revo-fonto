<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id: pasion.xml,v 1.14 2015/07/04 08:37:41 revo Exp $">
<kap>
  <rad>Pasion</rad>/o <fnt><bib>SPV</bib></fnt>
</kap>
<drv mrk="pasion.0o">
  <kap><tld/>o</kap>
  <snc mrk="pasion.0o.KRI">
    <uzo tip="fak">KRI</uzo>
    <dif>
      <ref tip="malprt" cel="evange.0o.BIB">Evangelia</ref>
      rakonto pri la lasta man&gcirc;o, aresto, kondamno kaj morto 
      de <ref cel="jesu.0o.homo">Jesuo</ref>.
    </dif>
    <trdgrp lng="hu">
      <trd>Krisztus szenved&eacute;se</trd>,
      <trd>szenved&eacute;st&ouml;rt&eacute;net</trd>
    </trdgrp>
    <trd lng="nl">Passie</trd>
    <trd lng="es">Pasi&oacute;n de Cristo</trd>
  </snc>
  <snc mrk="pasion.0o.BELA">
    <uzo tip="fak">BELA</uzo>
    <dif>
      Publika a&ubreve; arta prezento de la <tld lit="p"/>a rakonto.
    </dif>
    <subsnc mrk="pasion.0o.liturgia">
      <dif>
        Tia prezento en diservo:
        <ekz>
          li plorigis &ccirc;iujn homojn, kiel okazas dum
          predikoj pri la <tld/>o
          <fnt>
          <aut>E. de Bonaero</aut>,
          <vrk>La Friponeto de Tormes</vrk>,
          <lok>1973</lok>
          </fnt>.
        </ekz>
      </dif>
    </subsnc>
    <subsnc mrk="pasion.0o.MUZ">
      <uzo tip="fak">MUZ</uzo>
      <dif>
        <ref tip="super" cel="kompon.0ajxo">Kompona&jcirc;o</ref>
        la&ubreve; teksto de evangelia <tld lit="p"/>o 
        por muzika kaj kanta prezento:
        <ekz>
          La Mateo-<tld/>o kaj la Johano-<tld/>o estas la du
          ununuraj komplete konservi&gcirc;intaj <tld lit="p"/>aj
          kompona&jcirc;oj de Bach
          <fnt>
            <bib>Viki</bib>,
            <lok><url
            ref="http://eo.wikipedia.org/wiki/Matth%C3%A4uspassion_%28Bach%29">
            Matth&auml;uspassion</url>, 2010-10-10</lok>
          </fnt>.          
        </ekz>
      </dif>
      <trdgrp lng="de">
        <trd>Passion<klr tip="ind"> (Musik)</klr></trd>
      </trdgrp>
      <trd lng="es">Pasi&oacute;n</trd>
      <trd lng="hu">passi&oacute;</trd> 
      <trd lng="nl">passie<klr tip="ind"> (muziekstuk)</klr></trd>   
    </subsnc>
  </snc>
  <trd lng="cs">pašije</trd>
  <trd lng="en">Passion<klr> of Christ</klr></trd>
  <trd lng="fr">passion<klr> (rel.)</klr></trd>
  <trd lng="pt">Paix&atilde;o <klr>de Cristo</klr></trd>
  <trd lng="sk">pašie</trd>
</drv>
</art>
