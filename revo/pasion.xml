<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>pasion</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="pasion.0o">
  <kap><tld/>o</kap>
  <snc mrk="pasion.0o.KRI">
    <uzo tip="fak">KRI</uzo>
    <dif>
      <ref tip="malprt" cel="evange.0o.BIB">Evangelia</ref>
      rakonto pri la lasta man&gcirc;o, aresto, kondamno kaj morto de Jesuo.
    </dif>
    <trdgrp lng="fr">
      <trd>passion<klr> (r&eacute;cit religieux)</klr></trd>
    </trdgrp>
  </snc>
  <snc mrk="pasion.0o.MUZ">
    <uzo tip="fak">MUZ</uzo>
    <dif>
      <ref tip="super" cel="kompon.0ajxo">Kompona&jcirc;o</ref>
      la&ubreve; pasiono kaj eventuale pliaj religiaj tekstoj,
      kun unu kantisto por rakontado, pluraj kantistoj por
      la diversaj roloj, eventuale &hcirc;oro kaj orkestro.
    </dif>
    <trd lng="es">Pasi&oacute;n</trd>
    <trdgrp lng="fr">
      <trd>passion<klr> (pi&egrave;ce de musique)</klr></trd>
    </trdgrp>
  </snc>
</drv>
</art>

