<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>1</ofc>
<rad>projekci</rad>/o
</kap>
<drv mrk="projek.0o">
  <kap><tld/>o</kap>
  <snc mrk="projek.0o.kanona">
    <uzo tip="fak">MAT</uzo>
    <dif>
      <ref tip="super" cel="bild.0igo">Bildigo</ref> de
      <ref cel="produt.kartezia0o">kartezia produto</ref> de pluraj aroj
      al la p-a inter ili, kiu &jcirc;etas &ccirc;iun opon al &gcirc;ia
      p-a <ref cel="term.0o.opo">termo</ref>:
      <ekz>
        tian bildigon oni nomas <ref cel="kanon.0a.MAT">kanona</ref>
        <tld/>o al la p-a faktoro;
      </ekz>
      <ekz>
        en vektora spaco <em>K</em><sup>n</sup> la <tld/>o
        <sncref ref="projek.0o.kanona"/> al ajna el la n faktoroj &jcirc;etas
        vektoron al &gcirc;ia p-a komponanto la&ubreve; la
        <ref cel="baz.kanona0o">kanona bazo</ref>.
      </ekz>
    </dif>
  </snc>
  <snc>
    <uzo tip="fak">MAT</uzo>
    <subsnc mrk="projek.0o.vektora">
      <dif>
        <klr>(en <ref cel="spac.vektora0o">vektora spaco</ref>)</klr>
        Tia <ref cel="homomo.0o">homomorfio</ref> p, ke &gcirc;i egalas
        al la <ref cel="lig.kun0o.rilatoj">kunligo</ref> kun si mem:
        <ekz>
          la <ref cel="kern.0o.homomorfio">kerno</ref> kaj la
          <ref cel="bild.0aro">bildaro</ref> de <tld/>o estas
          <ref cel="komple1.0a.vektorasubspaco">komplementaj</ref>;
        </ekz>
        <ekz>
          se <em>U</em> estas la kerno de p kaj <em>V</em> &gcirc;ia
          bildaro, tiam oni diras, ke p estas <ctl><tld/>o al subspaco
          <em>V</em>, paralele al subspaco <em>U</em></ctl>.
        </ekz>
      </dif>
      <ref tip="sin" cel="projek.vektora0o">vektora projekcio.</ref>
    </subsnc>
    <subsnc mrk="projek.0o.oblikva">
      <dif>
        <klr>(en <ref cel="spac.afina0o">afina spaco</ref>)</klr>
        <ref cel="afin.0a.bildigo">Afina</ref>
        <ref tip="super" cel="bild.0igo">bildigo</ref>, asociita al
        <ref cel="projek.0o.vektora"><tld/>o <sncref ref="projek.0o.vektora"/>
        </ref>.
      </dif>
      <ref tip="sin" cel="projek.oblikva0o">oblikva <tld/>o.</ref>
    </subsnc>
    <subsnc mrk="projek.0o.orta">
      <dif>
        <klr>
        (en <ref cel="spac.euxklida0o">e&ubreve;klida afina spaco</ref>)
        </klr>
        Tia <ref cel="projek.0o.oblikva"><tld/>o
        <sncref ref="projek.0o.oblikva"/></ref>, ke la kerno kaj bildaro de
        la asociita homomorfio estas <ref cel="ort.0a.aro">ortaj</ref>.
      </dif>
      <ref tip="sin" cel="projek.orta0o">orta projekcio.</ref>
    </subsnc>
  </snc>
  <snc mrk="projek.0o.GEOG">
    <uzo tip="fak">GEOG</uzo>
    <dif>
      &Ccirc;iu el la diversaj metodoj, uzataj por prezenti sur ebena surfaco
      parton a&ubreve; tuton de la tera a&ubreve; &ccirc;iela sfero.
    </dif>
  </snc>
  <snc mrk="projek.0o.TEK">
    <uzo tip="fak">TEK</uzo>
    <dif>
      Desegna&jcirc;o de objekto, konstruo, ma&scirc;ino k.s., farita
      sur ebeno la&ubreve; certaj konvencioj:
      <ekz>
        horizontala, vertikala, profila <tld/>o.
      </ekz>
    </dif>
  </snc>
  <snc mrk="projek.0o.FOT">
    <uzo tip="fak">FOT</uzo>
    <dif>
      Luma bildo, sendata sur pli-malpli proksiman ekranon per speciala
      lanterno.
    </dif>
  </snc>
  <trd lng="fr">projection<klr tip="ind"> (math. et sens d&eacute;riv&eacute;s)</klr></trd>
</drv>
<drv mrk="projek.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Desegni <tld/>on de io; trovi la bildon de punkto a&ubreve; figuro per
      <tld/>o.
    </dif>
  </snc>
  <snc mrk="projek.0i.FOT">
    <uzo tip="fak">FOT</uzo>
    <dif>
      Sendi luman bildon sur ekranon:
      <ekz>
        <tld/>i filmon, lumbildojn.
      </ekz>
    </dif>
    <adm>
    La vorto "lumbildo" ankora&ubreve; ne ekzistas en REVO.
    <aut>MB</aut>
    </adm>
  </snc>
  <trd lng="fr">projeter</trd>
</drv>
<drv mrk="projek.0ajxo">
  <kap><tld/>a&jcirc;o</kap>
  <snc mrk="projek.0ajxo.MAT">
    <uzo tip="fak">MAT</uzo>
    <fnt><bib>MatVort</bib></fnt>
    <dif>
      Bildo per <tld/>o:
      <ekz>
        la orta <tld/>a&jcirc;o de sfero al ebeno estas cirklo.
      </ekz>
    </dif>
    <rim>
      Ekster la rigora faka lingva&jcirc;o eblas konsideri, ke anka&ubreve;
      <ctl><tld/>o</ctl> havas &ccirc;i tiun sencon.
    </rim>
  </snc>
  <snc mrk="projek.0ajxo.FOT">
    <uzo tip="fak">FOT</uzo>
    <fnt><bib>PIV1</bib></fnt>
    <dif>
      Diafana kli&scirc;o, uzata por <tld/>ado.
    </dif>
    <adm>
    &Ccirc;u plu aktuala? &Ccirc;u ne temas pri la nunaj "lumbildoj"?
    <aut>MB</aut>
    </adm>
  </snc>
</drv>
<drv mrk="projek.0ilo">
  <kap><tld/>ilo</kap>
  <snc>
    <dif>
      Aparato por <tld/>i <sncref ref="projek.0i.FOT"/>.
    </dif>
  </snc>
  <trd lng="fr">projecteur<klr tip="ind"> (film, diapos, etc.)</klr></trd>
</drv>
<drv mrk="projek.centra0o">
  <kap>centra <tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <snc>
    <dif>
      <klr>(en tridimensia <ref cel="spac.afina0o">afina spaco</ref>,
      al ebeno <em>P</em>, rilate al punkto O situanta ekster <em>P</em>)</klr>
      <ref tip="super" cel="bild.0igo">Bildigo</ref>, kiu &jcirc;etas punkton
      M al la intersekco de rekto OM kun <em>P</em>:
      <ekz>
        centra <tld/>o ne estas afina bildigo;
      </ekz>
      <ekz>
        la punktoj de la ebeno paralela al <em>P</em> kaj trairanta O ne
        havas bildon per centra <tld/>o al ebeno <em>P</em> rilate al O.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">projection centrale</trd>
</drv>
<drv mrk="projek.kanona0o">
  <kap>kanona <tld/>o</kap>
  <snc>
    <uzo tip="fak">MAT</uzo>
    <ref tip="dif" cel="projek.0o.kanona"><tld/>o <sncref ref="projek.0o.kanona"/>.</ref>
  </snc>
  <trd lng="fr">projection canonique</trd>
</drv>
<drv mrk="projek.oblikva0o">
  <kap>oblikva <tld/>o</kap>
  <snc>
    <uzo tip="fak">MAT</uzo>
    <ref tip="dif" cel="projek.0o.oblikva"><tld/>o <sncref ref="projek.0o.oblikva"/>.</ref>
  </snc>
  <trd lng="fr">projection oblique</trd>
</drv>
<drv mrk="projek.orta0o">
  <kap>orta <tld/>o</kap>
  <snc>
    <uzo tip="fak">MAT</uzo>
    <ref tip="dif" cel="projek.0o.orta"><tld/>o <sncref ref="projek.0o.orta"/>.</ref>
  </snc>
  <trd lng="fr">projection orthogonale</trd>
</drv>
<drv mrk="projek.vektora0o">
  <kap>vektora <tld/>o</kap>
  <snc>
    <uzo tip="fak">MAT</uzo>
    <ref tip="dif" cel="projek.0o.vektora"><tld/>o <sncref ref="projek.0o.vektora"/>.</ref>
  </snc>
  <trdgrp lng="fr">
    <trd>projection vectorielle</trd>,
    <trd>projecteur<klr tip="ind"> (math.)</klr></trd>
  </trdgrp>
</drv>
</art>

