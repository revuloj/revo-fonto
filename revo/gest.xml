<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>gest</rad>/o
</kap>
<drv mrk="gest.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <dif>
      &Ccirc;iu montra, esprima movo de la korpo, precipe de kapo, brako, mano:
      <ekz>jesa <tld/>o, nea <tld/>o;</ekz>
      <ekz><tld/>o de kolero, surprizo.</ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="mimik.0o">mimiko</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="de">
     <trd>Geste</trd>,
     <trd>Geb&auml;rde</trd></trdgrp>
  <trd lng="fr">geste<klr tip="ind"> (mouvement du corps)</klr></trd>
  <trd lng="nl">gebaar</trd>
  <trd lng="ru">&c_zh;&c_je;&c_s;&c_t;</trd>
</drv>
<drv mrk="gest.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Fari <tld/>on. 
    </dif>
  </snc>
  <trd lng="fr">faire un <ind>geste</ind></trd>
  <trd lng="nl">een <ind>gebaar</ind> maken</trd>
</drv>
<drv mrk="gest.0adi">
  <kap><tld/>adi</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc>
    <dif>
      Fari multajn rimarkeblajn <tld/>ojn. 
    </dif>
  </snc>
  <trdgrp lng="de">
     <trd>gestikulieren</trd>,
     <trd>mit den H&auml;nden <ind>herumfuchteln</ind></trd></trdgrp>
  <trd lng="fr">gesticuler</trd>
  <trdgrp lng="nl">
    <trd>gebaren maken</trd>,
    <trd>gesticuleren</trd>
  </trdgrp>
<trd lng="ru">&c_zh;&c_je;&c_s;&c_t;&c_i;&c_k;&c_u;&c_l;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
</drv>
<drv mrk="gest.0ema">
  <kap><tld/>ema</kap>
  <snc>
    <dif>
      Inklina <tld/>adi parolante. 
    </dif>
  </snc>
</drv>
</art>
