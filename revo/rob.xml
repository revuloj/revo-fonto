<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>2</ofc>
  <rad>rob</rad>/o
</kap>
<drv mrk="rob.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">TEKS</uzo>
  <snc mrk="rob.0o.surtuto">
    <dif>
      Longa ampleksa flirtanta vesto kun manikoj kaj kovranta la korpon de
      kolo &gcirc;is piedoj, kiun portis la viroj en iamaj tempoj kaj kiu estas
      ankora&ubreve; uzata de orientanaj viroj kaj de pastroj
    </dif>
    <ref tip="super" cel="surtut.0o">surtuto</ref>
    <refgrp tip="vid">
      <ref cel="sutan.0o">sutano</ref>
    </refgrp>
    <trd lng="de">Gewand</trd>
    <trdgrp lng="nl">
      <trd>gewaad</trd>,
      <trd>kleed</trd>
    </trdgrp>
  </snc>
  <snc mrk="rob.0o.virino">
    <dif>
      Longa ampleksa flirtanta vesto, unupeca, kun a&ubreve; sen manikoj,
      kovranta la korpon de kolo &gcirc;is piedoj a&ubreve; parto de la gamboj, ofte
      striktigita per zono, ankora&ubreve; nun portata de la virinoj kaj infanoj:
      <ekz>
        virinon prezentas tiu statuo kaj falbaloj de &scirc;ia <tld/>o tre mole
        elver&scirc;i&gcirc;as &gcirc;is la plata tomba kovrilo<fnt><aut>Spomenka
        &Scirc;timec</aut>: <vrk>Hejmo en Meze&ubreve;ropo</vrk>,
        <bib>Monato</bib><lok>jaro 1996a, numero 1a, p. 20a</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="prt">
      <ref cel="jup.0o">jupo</ref>.
    </refgrp>
    <trd lng="de">Kleid</trd>
    <trdgrp lng="fr">
      <trd>robe</trd>
    </trdgrp>
    <trdgrp lng="nl">
      <trd>jurk</trd>,
      <trd>japon</trd>
    </trdgrp>
    <trd lng="ru">&c_p;&c_l;&c_a;&c_t;&c_mol;&c_je;</trd>
  </snc>
  <snc mrk="rob.0o.talaro">
    <ref tip="dif" cel="talar.0o">talaro</ref>
    <trd lng="de">Robe</trd>
    <trd lng="nl">toga</trd>
  </snc>
  <trd lng="en">robe</trd>
</drv>

<drv mrk="rob.negligxa0o">
  <kap>negli&gcirc;a <tld/>o<fnt>B</fnt>, &ccirc;ambra <tld/>o<fnt>D</fnt></kap>
  <uzo tip="fak">TEKS</uzo>
  <snc>
    <dif>
      Negli&gcirc;a longa nestre&ccirc;a hejmvesto
    </dif>
    <refgrp tip="vid">
      <ref cel="pijxam.0o">pi&jcirc;amo</ref>,
      <ref cel="surtut.0o">surtuto</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="de">
    <trd>Hausmantel</trd>,
    <trd>Hauskleid</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>n&eacute;glig&eacute;<klr> (robe de chambre)</klr></trd>,
    <trd>robe de chambre</trd>,
    <trd>robe d'int&eacute;rieur</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>kamerjas</trd>,
    <trd>neglig&eacute;</trd>
  </trdgrp>
  <trd lng="pl">bon&zdot;urka</trd>
  <trd lng="ru">&c_h;&c_a;&c_l;&c_a;&c_t;</trd>
</drv>
</art>
