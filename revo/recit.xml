<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: recit.xml,v 1.14 2024/04/13 20:15:52 revo Exp $">
<kap>
  <rad>recit</rad>/i <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="recit.0i">
  <kap><tld/>i</kap>
  <snc mrk="recit.0i.BELE">
    <dif>
      <ref cel="parker.0e">Parkere</ref> eldiri tutan tekston:
      <ekz>
        ili <tld/>as a&ubreve; per simpla rakontado a&ubreve; per imitado a&ubreve; amba&ubreve;maniere
        <fnt>
          <bib>Rsp</bib>
        </fnt>;
      </ekz>
      <ekz>
        la aliaj du venkitoj <klr>[&#x2026;]</klr> <tld/>is respektive
        proverbon
        <fnt><bib>RugxDom</bib>, <lok>&ccirc;apitro 62a, volumo 2a, p.
        341a</lok></fnt>;
      </ekz>
      <ekz>
        li subite <tld/>is la topografiajn memorojn de sia lo&gcirc;ejo, kiun li tiel bone
        konis
        <fnt>
          <bib>LGA</bib>
        </fnt>;
      </ekz>
      <ekz>
        mi memoras la <tld/>a&jcirc;on de la karmemora <nom>Nikolaj Rytjkov</nom>: jen la kato, kiu
        man&gcirc;is la raton, kiu man&gcirc;is la muson, kiu man&gcirc;is la froma&gcirc;on <klr>[&#x2026;]</klr>
        <fnt>
          <bib>Lingvistik</bib>
          <aut>Wells</aut>
          <vrk>Lingvistikaj aspektoj de Esperanto</vrk>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="deklam.0i.POE">deklami<sncref/></ref>
    </refgrp>
  </snc>
  <ref tip="hom" cel="cit.re0i">re&middot;cit&middot;i</ref>
  <trd lng="be">&c_ch;&c_y;&c_t;&c_a;&c_c;&c_mol; &c_n;&c_a;&c_p;&c_a;&c_m;&c_ja;&c_c;&c_mol;</trd>
  <trd lng="bg">&c_r;&c_je;&c_c;&c_i;&c_t;&c_i;&c_r;&c_a;&c_m;</trd>
  <trd lng="bo">&t_ka;&t_lata;&t_naro;&t_ga; &t_ba;&t_ka;&t_lata;&t_ga;&t_sa; &t_ba;&t_ka;&t_lata;&t_ga; &t_ka;&t_lata;&t_naro;&t_ga;&t_sa;</trd>
  <trdgrp lng="cs">
    <trd>p&rcaron;edn&eacute;st</trd>,
    <trd>recitovat</trd>
  </trdgrp>
  <trd lng="de">rezitieren</trd>
  <trd lng="en">recite</trd>
  <trd lng="fr">r&eacute;citer</trd>
  <trdgrp lng="hu">
    <trd>felmond</trd>,
    <trd>el&odblac;ad</trd>,
    <trd>elszaval</trd>,
    <trd>elmond</trd>
  </trdgrp>
  <trd lng="ja">&#x5FA9;&#x5531;&#x3059;&#x308B;  <pr>&#x3075;&#x304F;&#x3057;&#x3087;&#x3046;&#x3059;&#x308B;</pr></trd>
  <trdgrp lng="nl">
    <trd>voordragen</trd>,
    <trd>reciteren</trd>
  </trdgrp>
  <trd lng="pl">recytowa&cacute;</trd>
  <trd lng="ro">declama</trd>
  <trdgrp lng="sk">
    <trd>prednies&tcaron;</trd>,
    <trd>recitova&tcaron;</trd>,
    <trd>zarecitova&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_ch;&c_i;&c_t;&c_a;&c_t;&c_i; &#x43D;&c_a;&#x43F;&c_a;&#x43C;&#x2019;&#x44F;&c_t;&#x44C;</trd>,
    <trd>&c_v;&c_i;&#x43A;&#x43E;&#x43D;&c_u;&c_v;&c_a;&c_t;&c_i; &c_r;&c_je;&c_ch;&c_i;&c_t;&c_a;&c_t;&c_i;&c_v;&#x43E;&#x43C;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x80CC;&#x8AA6; <pr>b&#xE8;is&#xF2;ng</pr></trd>,
    <trd>&#x80CC;&#x8BF5; <pr>b&#xE8;is&#xF2;ng</pr></trd>,
    <trd>&#x552A; <pr>f&#x11B;ng</pr></trd>
  </trdgrp>
</drv>

<drv mrk="recit.0o">
  <kap><tld/>o, <var><kap><tld/>ado</kap></var></kap>
  <snc mrk="recit.0o.BELE">
  <uzo tip="fak">BELE</uzo>
    <dif>
      Eldiro de <ref cel="rakont.0o">rakonto</ref> a&ubreve; alia teksto, 
      ordinare anta&ubreve; publiko:
      <ekz>
        vivecaj <tld/>oj, en poezia formo, pri fabelaj heroa&jcirc;oj de
        <nom>Gilgame&scirc;</nom>
        <fnt><bib>I&scirc;tar</bib>, <lok>&ccirc;apitro 3a, Lemuel da&ubreve;rigas sian
        esploron</lok></fnt>;
      </ekz>
      <ekz>
        zamenhofaj poemoj estis sufi&ccirc;e ritmaj, sufi&ccirc;e klaraj kaj sufi&ccirc;e belsonaj por
        faciligi agrablan <tld/>on
        <fnt>
          <bib>EeP</bib>
        </fnt>;
      </ekz>
      <ekz>
        kolekto de popolaj, klasikaj kaj modernaj kanzonoj, modkantoj, paroladoj,
        literatura <tld/>ado
        <fnt>
          <bib>EeP</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
       <ref cel="recital.0o">recitalo</ref>,
       <ref cel="recita.0o">recitativo</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_ch;&c_y;&c_t;&c_a;&c_n;&c_mol;&c_n;&c_je; &c_n;&c_a;&c_p;&c_a;&c_m;&c_ja;&c_c;&c_mol;</trd>
  <trd lng="bg">&c_r;&c_je;&c_c;&c_i;&c_t;&c_a;&c_c;&c_i;&c_ja;</trd>
  <trdgrp lng="cs">
    <trd>p&rcaron;edn&aacute;&scaron;en&iacute;</trd>,
    <trd>recitace</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Rezitation</trd>,
    <trd>Vortrag</trd>
  </trdgrp>
  <trd lng="en">recitation</trd>
  <trd lng="fr">r&eacute;citation</trd>
  <trdgrp lng="hu">
    <trd>el&odblac;ad&aacute;s</trd>,
    <trd>szavalat</trd>
  </trdgrp>
  <trd lng="nl">voordracht</trd>
  <trd lng="pl">recytacja</trd>
  <trd lng="ro">recitarea</trd>
  <trdgrp lng="sk">
    <trd>predn&aacute;&scaron;anie</trd>,
    <trd>recit&aacute;cia</trd>
  </trdgrp>
  <trd lng="uk">&c_ch;&c_i;&c_t;&c_a;&#x43D;&#x43D;&#x44F; &#x43D;&c_a;&#x43F;&c_a;&#x43C;&#x2019;&#x44F;&c_t;&#x44C;</trd>
  <trdgrp lng="zh">
    <trd>&#x6717;&#x8BF5; <pr>l&#x1CE;ngs&#xF2;ng</pr></trd>,
    <trd>&#xF929;&#x8AA6; <pr>l&#x1CE;ngs&#xF2;ng</pr></trd>
  </trdgrp>
</drv>
</art>

