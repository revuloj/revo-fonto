<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<ofc>*</ofc>
<rad>grup</rad>/o
</kap>
<drv mrk="grup.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc>
    <dif>
      Aro da samspecaj objektoj, kunigitaj por sama celo:
      <ekz>
        <tld/>o da
        pentra&jcirc;oj, da dokumentoj, da argumentoj.
      </ekz>
    </dif>
  </snc>
  <snc>
    <dif>
      Aro da personoj, kiujn io komuna kunigas:
      <ekz>
        <tld/>o da laboristoj, da
        rigardantoj;
      </ekz>
      <ekz>
        <tld/>o da infanoj kune ludantaj;
      </ekz>
      <ekz>
        <tld/>o politika <klr>(da deputitoj samopiniaj)</klr>;
      </ekz>
      <ekz>
        statua <tld/>o;
      </ekz>
      <ekz>
        mar&scirc;i po<tld/>e
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="band.0o">bando</ref>,
      <ref cel="trup.0o">trupo</ref>,
      <ref cel="hord.0o">hordo</ref>,
      <ref cel="parti.0o">partio</ref>.
    </refgrp>
  </snc>
  <snc>
    <uzo tip="fak">FON</uzo>
    <dif>
      Aro da ofte kunigitaj literoj:
      <ekz>
        la <tld/>oj br, kv.
      </ekz>
    </dif>
  </snc>
  <snc>
    <uzo tip="fak">BIO</uzo>
    <dif>
      Specaro, genro.
    </dif>
  </snc>
  <snc mrk="grup.0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <dif>
      Tia <ref tip="super" cel="magm.0o.MAT">magmo</ref> (<em>E</em>,T),
      ke &gcirc;ia <ref cel="operac.0o.MAT">operacio</ref> T estas
      <ref cel="asoci.0eca.MAT">asocieca</ref>,
      ke ekzistas <ref cel="neuxtr.0a.MAT">ne&ubreve;tra elemento</ref>
      en <em>E</em>, kaj ke por &ccirc;iu elemento en <em>E</em> ekzistas
      &gcirc;ia <ref cel="neuxtr.0iganto.MAT">ne&ubreve;triganto</ref>:
      <ekz>
        <tld/>o estas <ref tip="super" cel="monojd.0o">monojdo</ref>,
        kies &ccirc;iuj elementoj estas
        <ref cel="neuxtr.0igebla.MAT">ne&ubreve;trigeblaj</ref>;
      </ekz>
      <ekz>
        la aro de &ccirc;iuj <ref cel="jxet.dissur0o">bijekcioj</ref>
        de iu aro al si mem, konsiderata kune kun la operacio
        <ref cel="lig.kun0o">kunligo</ref> estas <tld/>o.
      </ekz>
    </dif>
  </snc>
  <trd lng="cs">skupina</trd>
  <trd lng="de">Gruppe</trd>
  <trd lng="en">group</trd>
  <trd lng="fr">groupe</trd>
</drv>
<drv mrk="grup.0igi">
  <kap><tld/>igi</kap>
  <snc>
    <dif>
      Arigi en <tld/>ojn:
      <ekz>
        <tld/>igi la argumentojn en tri kategoriojn;
      </ekz>
      <ekz>
        la fotografisto <tld/>igas la klientojn;
      </ekz>
      <ekz>
        la tuta cetera esperantistaro <tld/>i&gcirc;is
        &ccirc;irka&ubreve; sia standardo
        <fnt>(<aut>Zamenhof</aut>: <vrk>Parolo
        anta&ubreve; la Kvara Kongreso Esperantista
        en Dresden, 1908</vrk>)</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">gruppieren</trd>
</drv>
<drv mrk="grup.0acxo">
  <kap><tld/>a&ccirc;o</kap>
  <snc>
    <dif>
      Malestiminda <tld/>o
    </dif>
    <refgrp tip="vid">
      <ref cel="koteri.0o">koterio</ref>.
    </refgrp>
  </snc>
  <trd lng="de">Bande</trd>
</drv>
<drv mrk="grup.sub0o">
  <kap>sub<tld/>o</kap>
  <snc mrk="grup.sub0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <dif>
      (de <tld/>o (<em>E</em>,T))
      Tia <ref tip="super" cel="grup.0o.MAT"><tld/>o</ref>
      (<em>A</em>,T<sub>A</sub>), ke
      <em>A</em>&#x2282;<em>E</em> kaj
      xT<sub>A</sub>y=xTy
      por &ccirc;iuj x, y&#x2208;<em>A</em>:
      <ekz>
        nemalplena subaro estas sub<tld/>o nur, se al &gcirc;i apartenas
        rezultoj de la operacio inter kiu ajn unua elemento kaj
        ne&ubreve;triganto de kiu ajn dua.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Untergruppe</trd>
  <trd lng="fr">sous-groupe</trd>
</drv>
</art>
