<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>mazda</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="mazda.0o">
  <kap><tld lit="M"/>o</kap>
  <uzo tip="fak">REL</uzo>
  <snc>
    <dif>
      <ref tip="sin" cel="di.0o.monoteisma">Dio</ref> a&ubreve; precipa dio en
      <ref tip="vid" cel="mazda.0ismo"><tld/>ismo</ref>.
    </dif>
  </snc>
  <trdgrp lng="de">
    <trd>Ahura Mazda</trd>,
    <trd>Ahuramazda</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>Ahura Mazd&acirc;</trd>,
    <trd>Ohrmazd</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>Ahura Mazd&aacute;</trd>,
    <trd>Ormuzd</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_A;&c_h;&c_u;&c_r;&c_a;&c_m;&c_a;&c_z;&c_d;&c_a;</trd>,
    <trd>&c_O;&c_r;&c_m;&c_u;&c_z;&c_d;</trd>,
    <trd>&c_O;&c_r;&c_m;&c_a;&c_z;&c_d;</trd>
  </trdgrp>
</drv>

<drv mrk="mazda.0ano">
  <kap><tld/>ano</kap>
  <uzo tip="fak">REL</uzo>
  <snc>
    <dif>
      Homo akceptanta la doktrinon kaj praktikon de <tld/>ismo.
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>gu&egrave;bre</trd>,
    <trd>parsi</trd>,
    <trd>mazd&eacute;en<klr> (subst.)</klr></trd>,
    <trd>zoroastrien</trd>
  </trdgrp>
  <trd lng="hu">Mazda-h&iacute;v&odblac;</trd>
  <trdgrp lng="ru">
    <trd>&c_g;&c_je;&c_b;&c_r;</trd>,
    <trd>&c_p;&c_a;&c_r;&c_s;</trd>,
    <trd>&c_z;&c_o;&c_r;&c_o;&c_a;&c_s;&c_t;&c_r;&c_i;&c_je;&c_c;</trd>
  </trdgrp>
</drv>

<drv mrk="mazda.0ismo">
  <kap><tld/>ismo</kap>
  <uzo tip="fak">REL</uzo>
  <snc>
    <dif>
      Persdevena <ref tip="super" cel="religi.0o">religio</ref>
      reformita de la profeto
      <ref tip="vid" cel="zaratusxtr.0o">Zaratu&scirc;tro</ref>
      en la 7a jarcento a. K., kies &ccirc;efa sankta libro estas la
      <ref tip="vid" cel="avest.0o">Avesto</ref>,
      plu praktikata kiel minoritata religio precipe en centra Irano kaj
      Gu&gcirc;aratio.
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>mazd&eacute;isme</trd>,
    <trd>parsisme</trd>,
    <trd>zoroastrisme</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>mazdaizmus</trd>,
    <trd>perzsa vall&aacute;s</trd>,
    <trd>p&aacute;rszi vall&aacute;s</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_m;&c_a;&c_z;&c_d;&c_je;&c_i;&c_z;&c_m;</trd>,
    <trd>&c_z;&c_o;&c_r;&c_o;&c_a;&c_s;&c_t;&c_r;&c_i;&c_z;&c_m;</trd>
  </trdgrp>
</drv>
</art>

