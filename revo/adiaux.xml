<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc><rad>adia&ubreve;</rad>
</kap>
<drv mrk="adiaux.0">
  <kap><ofc>*</ofc><tld/></kap>
  <snc>
    <dif>
      Vorto, per kiu oni salutas iun, kiam oni foriras de li,
      &ccirc;efe se por longa tempo a&ubreve; definitive:
      <ekz>
        <tld/> kara amiko, &gcirc;is revido en la
        plej proksima kongreso!
        <fnt><bib>VdE</bib></fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        mi diris <tld/> al miaj lastaj esperoj
        <klr>(mi ilin definitive perdis)</klr>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        li diris <tld/> al la mondo surtera
        <klr>(li mortis)</klr>
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        kapsigni <ind><tld/>o</ind>n al iu<fnt>Z</fnt>;
        <trdgrp lng="fr">
          <trd>adieu<klr tip="ind"> (subst.)</klr></trd>,
          <trd><ind>adieu</ind>x</trd>
        </trdgrp>
      </ekz>
      <ekz>
        ni faris por la foriro de nia prezidanto <ind><tld/>a</ind>n kunvenon.
        <trd lng="fr">d'<ind>adieu</ind></trd>
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_y;&c_v;&c_a;&c_j;</trd>
  <trd lng="br">kenavo</trd>
  <trd lng="de">tsch&uuml;ss</trd>
  <trd lng="en">farewell</trd>
  <trd lng="es">adios</trd>
  <trdgrp lng="fr">
    <trd>adieu<klr tip="ind"> (interj.)</klr></trd>
  </trdgrp>
  <trd lng="he">&shin;&lamed;&vav;&fmem;<klr tip="amb"> (&bet;&resh;&kaf;&tav; &pe;&resh;&yod;&dalet;&he;)</klr></trd>
  <trdgrp lng="nl">
    <trd>adieu</trd>,
    <trd>vaarwel</trd>,
    <trd>tot <ind>ziens</ind></trd>,
    <trd>tot <ind>kijk</ind></trd>
  </trdgrp>
  <trd lng="pl">no to <ind>cze&sacute;&cacute;</ind></trd>
  <trd lng="pt">adeus</trd>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_shch;&c_a;&c_j;</trd>
  <trd lng="sk">zbohom</trd>
  <trd lng="sv">adj&ouml;</trd>
</drv>

<drv mrk="adiaux.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="adiaux.0i.KOMUNE">
    <dif>
      Kapsigni <tld/>on, <ref cel="adiaux.0diri"><tld/>diri</ref> al iu:
      <ekz>
        li <tld/>is &scirc;in, al &scirc;i kun larmoj;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        &Z; <tld/>is la honorojn
        <fnt><bib>VivZam</bib><lok>11</lok></fnt>;
      </ekz>
      <ekz>
        mi atendis ekstere por eviti la tradician larmplenan
        <ind><tld/>ado</ind>n
        <fnt><bib>&Scirc;talrato</bib><lok>&ccirc;ap. 22</lok></fnt>.
        <trd lng="fr"><ind>adieu</ind>x</trd>
      </ekz>
    </dif>
    <trd lng="be">&c_r;&c_a;&c_z;&c_mol;&c_v;&c_ib;&c_t;&c_a;&c_c;&c_c;&c_a;</trd>
    <trd lng="br">kimiadi&ntilde;</trd>
    <trd lng="de">verabschieden</trd>
    <trdgrp lng="en">
      <trd>bid adieu</trd>,
      <trd>say goodbye</trd>,
      <trd>say farewell</trd>
    </trdgrp>
    <trdgrp lng="es">
      <trd>decir adios</trd>,
      <trd>despedirse</trd>
    </trdgrp>
    <trdgrp lng="fr">
      <trd>dire <ind>adieu</ind> (&agrave;)</trd>,
      <trd>faire ses <ind>adieu</ind>x (&agrave;)</trd>,
      <trd>prendre <ind>cong&eacute;</ind> (de)</trd>,
      <trd>quitter<klr tip="ind"> (qn, lui faire ses adieux)</klr></trd>,
      <trd>renoncer (&agrave;)<klr tip="ind"> (qc)</klr></trd>,
      <trd>se <ind>s&eacute;parer</ind> (de)<klr tip="ind"> (qc)</klr></trd>,
      <trd>tourner le <ind>dos</ind> (&agrave;)<klr tip="ind"> (qc)</klr></trd>
    </trdgrp>
    <trd lng="he">&lamed;&vav;&mem;&resh; <ind>&shin;&lamed;&vav;&fmem;</ind><klr tip="ind"> (&lamed;&pe;&resh;&yod;&dalet;&he;)</klr></trd>
    <trdgrp lng="nl">
      <trd>afscheid nemen</trd>,
      <trd>vaarwel zeggen</trd>
    </trdgrp>
    <trdgrp lng="pt">
      <trd>dizer adeus</trd>,
      <trd>despedir-se</trd>
    </trdgrp>
    <trd lng="ru">&c_p;&c_o;&c_p;&c_r;&c_o;&c_shch;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>
    <trd lng="sk">rozl&uacute;&ccaron;i&tcaron; sa</trd>
    <trd lng="sv">s&auml;ga <ind>farv&auml;l</ind></trd>
  </snc>
  <snc mrk="adiaux.0i.komp">
    <uzo tip="fak">KOMP</uzo>
    <fnt><lok><url ref="&KompLeks;/A.html#ADIAUxI">KompLeks</url></lok></fnt>
    <fnt><lok><url
    ref="http://www.rano.demon.co.uk/pivkomp/_adiaux.html">PIV-2Komp</url></lok></fnt>
    <dif>
      Indiki al komputilo finon de seanco kun dialoga programo.
    </dif>
    <ref tip="ant" cel="salut.0i.komp">saluti</ref>
    <ref tip="malprt" cel="seanc.0o.komp">seanco</ref>
    <trdgrp lng="de">
      <trd>abmelden</trd>,
      <trd>ausloggen</trd>
    </trdgrp>
    <trd lng="en">logout</trd>
    <trdgrp lng="fr">
      <trd>fermer la session<klr tip="ind"> (info.)</klr></trd>,
      <trd>se <ind>d&eacute;loguer</ind></trd>
    </trdgrp>
    <trd lng="he">&lamed;&he;&tav;<ind>&nun;&tav;&qof;</ind><klr tip="amb"> (&bet;&mem;&het;&shin;&bet;&yod;&fmem;)</klr></trd>
    <trd lng="nl">uitloggen</trd>
    <trd lng="pt"><ind>desligar</ind> o microcomputador</trd>
    <trd lng="ru">&c_v;&c_y;&c_j;&c_t;&c_i;</trd>
    <trd lng="sk">odhl&aacute;si&tcaron; sa</trd>
  </snc>
</drv>

<drv mrk="adiaux.0diri">
  <kap><tld/>diri</kap>
  <gra><vspec>x</vspec></gra>
  <snc>
    <dif>
      Diri <tld/>:
    <ekz>
      l&#8217;a&ubreve;dienco estis finita kaj ni levi&gcirc;is por
      <tld/>diri
      <fnt>
      <bib>Voja&gcirc;Imp</bib>
      <lok>&Ccirc;e A&hcirc;med&#8217; Pa&scirc;a&#8217;, la granda pentristo</lok>
      </fnt>;
    </ekz>
    <ekz>
      mi neniam iris dormi sen pensado pri la propraj vortoj
      de Alfred &ccirc;e la <ind><tld/>diro</ind>
      <fnt>
      <aut>C. Dickens trad. L.L. Zamenhof</aut>
      <vrk>Batalo de l' vivo</vrk>
      <lok>Parto 3-a</lok>
      </fnt>.
      <trd lng="fr"><ind>adieu</ind>x</trd>
    </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>dire <ind>adieu</ind> (&agrave;)</trd>,
    <trd>faire ses <ind>adieu</ind>x (&agrave;)</trd>,
    <trd>prendre <ind>cong&eacute;</ind> (de)</trd>,
    <trd>quitter<klr tip="ind"> (qn, lui faire ses adieux)</klr></trd>
  </trdgrp>
</drv>
</art>
