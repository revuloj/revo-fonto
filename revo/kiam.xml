<drv mrk="kiam.0">
  <kap><ofc>*</ofc><tld/></kap>
  <snc mrk="kiam.0.demanda">
    <dif>
       Demanda <ref tip="super" cel="pronom.0o.gxenerala">pronomo</ref>
       adverba, signifanta &leftquot;en kiu tempo?&rightquot;:
       <ekz>
          <tld/>  mi ekiru
          <fnt>
             <aut>Michael Ende, trad. Wolfram Diestel</aut>
             <vrk>La Sen&ccirc;esa Rakonto</vrk>
             <lok>La Destino de Atrejo</lok>
          </fnt>?
       </ekz>
       <ekz>
          &gcirc;is <tld/>
          <fnt>
             <bib>Monato</bib>
             <aut>Donald Broadribb</aut>
             <vrk><url ref="https://www.monato.be/2003/007837.html">Ne al &ccirc;iuj pla&ccirc;os &ccirc;i literatura
                   gemeto</url></vrk>
             <lok>2003</lok>
          </fnt>?
       </ekz>
    </dif>
    <trd lng="ca">quan</trd>
    <trd lng="de">wann</trd>
    <trd lng="es">cuando</trd>
    <trd lng="he">&mem;&tav;&yod;</trd>
    <trd lng="hu">mikor</trd>
    <trd lng="id">kapan</trd>
    <trd lng="oc">quand</trd>
    <trd lng="pl">kiedy</trd>
    <trd lng="pt">quando</trd>
    <trd lng="ro">c&acirc;nd</trd>
    <trd lng="vo">ven</trd>
  </snc>
  <snc mrk="kiam.0.dependiga">
    <gra><vspec>konjunkcio</vspec></gra>
    <dif>
       En la tempo, dum kiu...:
       <ekz>
          <tld/>  oni estas ri&ccirc;a, oni havas multajn amikojn
          <fnt>
             <bib>F</bib>
             <lok>&FE; 16</lok>
          </fnt>;
       </ekz>
       <ekz>
          li &scirc;telas por sin satigi, <tld/>  li malsatas
          <fnt>
             <bib>MT</bib>
             <lok>Sentencoj 6:30</lok>
          </fnt>;
       </ekz>
       <ekz>
          de la momento, <tld/>  la afero komenci&gcirc;is, mi tie
          estis
          <fnt>
             <bib>MT</bib>
             <lok>Jesaja 48:16</lok>
          </fnt>;
       </ekz>
       <ekz>
          de post la tago, <tld/>  &scirc;i forlasis la landon
          <fnt>
             <bib>MT</bib>
             <lok>II. Re&gcirc;oj 8:6</lok>
          </fnt>;
       </ekz>
       <ekz>
          <ind>&ccirc;iun fojon, <tld/></ind>  <klr>[li]</klr>  sin
          movis, la ombro sin anka&ubreve; movis
          <fnt>
             <bib>Fab2</bib>
             <lok>La ombro</lok>
          </fnt>;
          <trd lng="de">jedesmal, wenn</trd>
          <trd lng="fr">chaque <ind>fois</ind>  que</trd>
       </ekz>
       <ekz>
          <ind>kiam ajn</ind>  <klr>[la morto]</klr>  venas, &gcirc;i
          &ccirc;iam venas, anta&ubreve; ol oni &gcirc;in atendas
          <fnt><bib>Fab3</bib><lok>&Scirc;parmonujo</lok></fnt>.
          <trdgrp lng="fr">
             <trd>quel que soit le <ind>moment</ind>  o&ugrave;</trd>,
             <trd>en quelque <ind>moment</ind>  que</trd>
          </trdgrp>
       </ekz>
    </dif>
    <trdgrp lng="ca">
    <trd>quan</trd>,
    <trd>al moment que</trd>
    </trdgrp>
    <trd lng="de">wenn</trd>
    <trdgrp lng="he">
       <trd>&kaf;&alef;&shin;&resh;</trd>,
       <trd>&kaf;&shin;-</trd>
    </trdgrp>
    <trd lng="hu">amikor</trd>
    <trdgrp lng="oc">
      <trd>quand</trd>,
      <trd>al moment que</trd>
    </trdgrp>
    <trd lng="vo">sesun</trd>
  </snc>
