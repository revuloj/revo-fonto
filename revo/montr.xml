<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>montr</rad>/i
</kap>
<drv mrk="montr.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="montr.0i.prezenti">
    <dif>
      Prezenti, elmeti al la rigardo:
      <ekz><tld/>u al ili vian novan veston<fnt><bib>F</bib>, <lok>&FE; 18</lok></fnt>;
      </ekz>
      <ekz>
        <tld/>i la vojon al iu, bildojn al infano;
      </ekz>
      <ekz>
        sin <tld/>i &ccirc;e la fenestro;
      </ekz>
      <ekz>
        <tld/>i gajan mienon;
      </ekz>
      <ekz>
        <tld/>i amikan frunton al iu<fnt>Z</fnt>
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="kasx.mal0i">malka&scirc;i</ref>,
      <ref cel="vid.0igi">vidigi</ref>
    </refgrp>
    <trd lng="nl">tonen</trd>
    <trd lng="de">zeigen</trd>
  </snc>
  <snc mrk="montr.0i.geste">
    <dif>
      Gvidi per gesto la rigardon de iu al io:
      <ekz>
        mi <tld/>is al la infano, kie ku&scirc;as &gcirc;ia pupo<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>i al iu iun per la fingro;
      </ekz>
      <ekz>
        <tld/>i en la direkto al<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>i la monton, la &ccirc;ielon.
      </ekz>
    </dif>
    <trd lng="nl">wijzen</trd>
    <trdgrp lng="de">
      <trd>zeigen</trd>,
      <trd>weisen</trd>
    </trdgrp>
  </snc>
  <snc mrk="montr.0i.konigi">
    <dif>
      Konigi per eksteraj signoj:
      <ekz>
        la horlo&gcirc;o <tld/>as la horojn kaj la kompaso la nordon;
      </ekz>
      <ekz>
        malsa&gcirc;ulo tuj <tld/>as sian koleron<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>i sian kura&gcirc;on, &gcirc;ojon, amon, surprizon, fierecon, siajn
        verajn sentojn;
      </ekz>
      <ekz>
        <tld/>i grandan lertecon en diskutado;
      </ekz>
      <ekz>
        sin <tld/>i afabla, nesincera;
      </ekz>
      <ekz>
        ne <tld/>u vin granda anta&ubreve; la re&gcirc;o;
      </ekz>
      <ekz>
        la estonto <tld/>os min prava;
      </ekz>
      <ekz>
        amikon <tld/>as maljeli&ccirc;o<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la vera <tld/>o, &ccirc;u ni progresas a&ubreve; ne, estas la kreskado a&ubreve;
        nekreskado de nia nombro<fnt>Z</fnt>
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="ekster">eksterigi</ref>,
      <ref cel="manife.0i">manifesti</ref>
    </refgrp>
    <trdgrp lng="nl">
      <trd>aanduiden</trd>,
      <trd>aanwijzen</trd>
    </trdgrp>
    <trd lng="de">zeigen</trd>
  </snc>
  <snc mrk="montr.0i.parole">
    <dif>
      Pervorte konigi, aperigi, evidentigi:
      <ekz>
        la <tld/>itajn (cititajn) vortojn ni konsilas ellerni<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>i al iu la minacantan dan&gcirc;eron kaj lian devon;
      </ekz>
      <ekz>
        li facile <tld/>os, ke li estas prava;
      </ekz>
      <ekz>
        mi volis <tld/>i (signifi) ke la tablo estis la celo de la
        flugado<fnt>Z</fnt>;
      </ekz>
      <ekz>
        &leftquot;da&rightquot; post ia vorto <tld/>as, ke tiu &ccirc;i havas signifon de
        mezuro<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>oj kaj konsiloj estas facilaj
        <fnt><bib>PrV</bib></fnt>
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="volv.mal0i">malvolvi</ref>,
      <ref cel="pruv.0i">pruvi</ref>
    </refgrp>
  </snc>
  <trd lng="cs">uk&aacute;zat</trd>
  <trd lng="en">show</trd>
  <trd lng="fr">montrer</trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_o;&c_k;&c_a;&c_z;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_p;&c_o;&c_k;&c_a;&c_z;&c_y;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_u;&c_k;&c_a;&c_z;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_u;&c_k;&c_a;&c_z;&c_y;&c_v;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
</drv>

<drv mrk="montr.0a">
  <kap><tld/>a</kap>
  <snc>
    <dif>
      Servanta por <tld/>i:
      <ekz>
        la <tld/>a fingro<fnt>B</fnt>;
      </ekz>
      <ekz>
        <tld/>a fenestro en butiko;
      </ekz>
      <ekz>
        <tld/>a (demonstrativa) pronomo;
      </ekz>
      <ekz>
        aldonante la vorton &ccirc;i al la vortoj <tld/>aj ni ricevas <tld/>on
        pli proksiman<fnt>Z</fnt>
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="aper.0i">aperi</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="fr">
    <trd>d&eacute;monstratif<klr> (qui montre)</klr></trd>,
    <trd>indicateur<klr> (adj.)</klr></trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Zeige-</trd>,
    <trd>Schau-</trd>
  </trdgrp>
  <trd lng="nl">tonen</trd>
  <trd lng="ru">&c_u;&c_k;&c_a;&c_z;&c_a;&c_t;&c_je;&c_l;&c_mol;&c_n;&c_y;&c_j;</trd>
</drv>

<drv mrk="montr.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc>
    <dif>
      I&gcirc;i videbla:
      <ekz>
        aperas herbo, <tld/>i&gcirc;as verda&jcirc;o<fnt>Z</fnt>;
      </ekz>
      <ekz>
        la luno <tld/>i&gcirc;is inter la nuboj.
      </ekz>
    </dif>
    <trd lng="nl">zich <ind>vertonen</ind></trd>
  </snc>
  <snc>
    <dif>
      I&gcirc;i evidenta:
      <ekz>
        balda&ubreve; <tld/>i&gcirc;is malbonaj sekvoj
        (<refgrp tip="vid">
          <ref cel="skrib.0i.esprimi">skribi</ref>,
          <ref cel="spir.0i">spiri</ref>
        </refgrp>).
      </ekz>
    </dif>
    <trd lng="nl">blijken</trd>
  </snc>
  <snc>
    <dif>
      Sin <tld/>i:
      <ekz>
        vi <tld/>i&gcirc;is malforta en tago de mizero<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trd lng="fr">s'<ind>av&eacute;rer</ind></trd>
    <trd lng="nl">blijken</trd>
  </snc>
  <trd lng="fr">se <ind>montrer</ind></trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_o;&c_k;&c_a;&c_z;&c_y;&c_v;&c_a;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_ja;&c_v;&c_l;&c_ja;&c_t;&c_mol;&c_s;&c_ja;</trd>,
    <trd>&c_p;&c_r;&c_o;&c_ja;&c_v;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
  </trdgrp>
</drv>

<drv mrk="montr.0igxema">
  <kap><tld/>i&gcirc;ema</kap>
  <snc>
    <ref tip="dif" cel="montr.sin0ema">sin<tld/>ema</ref>
  </snc>
  <trdgrp lng="fr">
    <trd>frimeur<klr> (adj.)</klr></trd>,
    <trd>poseur</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>ijdel</trd>,
    <trd>verwaand</trd>
  </trdgrp>
</drv>

<drv mrk="montr.0ilo">
  <kap><tld/>ilo</kap>
  <snc>
    <dif>
      Objekto servanta por <tld/>i:
      <ekz>
        <tld/>iloj de horlo&gcirc;o.
      </ekz>
    </dif>
  </snc>
  <trd lng="nl">wijzer</trd>
  <trdgrp lng="ru">
    <trd>&c_u;&c_k;&c_a;&c_z;&c_a;&c_t;&c_je;&c_l;&c_mol;</trd>,
    <trd>&c_u;&c_k;&c_a;&c_z;&c_k;&c_a; <klr>&c_i; &c_t;.&c_p;.</klr></trd>
  </trdgrp>
</drv>

<drv mrk="montr.el0i">
  <kap>el<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Eksteren <tld/>i:
      <ekz>
        malpacienculo el<tld/>as malsa&gcirc;econ<fnt>Z</fnt>;
      </ekz>
      <ekz>
        lia sa&gcirc;o el<tld/>i&gcirc;is<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <snc>
    <dif>
      Plene <tld/>i
    </dif>
    <refgrp tip="vid">
      <ref cel="ekspoz1.0i">ekspozicii</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="ru">
    <trd>&c_v;&c_y;&c_k;&c_a;&c_z;&c_y;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_d;&c_je;&c_m;&c_o;&c_n;&c_s;&c_t;&c_r;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>
  </trdgrp>
  <trd lng="nl">ten <ind>toon</ind> spreiden</trd>
</drv>

<drv mrk="montr.sin0ema">
  <kap>sin<tld/>ema</kap>
  <snc>
    <dif>
      &Scirc;atanta altiri la atenton; inklina paradi
    </dif>
    <refgrp tip="sin">
      <ref cel="montr.0igxema"><tld/>i&gcirc;ema</ref>
    </refgrp>
    <refgrp tip="vid">
      <ref cel="glor">glorama</ref>,
      <ref cel="modest">malmodesta</ref>,
      <ref cel="vant.0a">vanta</ref>;
    </refgrp>
    <refgrp tip="vid">
      <ref cel="pav.0o">pavo</ref>,
      <ref cel="strecx.0i">stre&ccirc;i</ref>
    </refgrp>
  </snc>
  <trdgrp lng="fr">
    <trd>frimeur<klr> (adj.)</klr></trd>,
    <trd>poseur</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>ijdel</trd>,
    <trd>verwaand</trd>
  </trdgrp>
</drv>

<drv mrk="montr.voj0ilo">
  <kap>voj<tld/>ilo</kap>
  <uzo tip="fak">TRA</uzo>
  <snc>
    <dif>
      &Ccirc;evoja stara tabulo, kun indiko de la direktoj al atingeblaj lokoj:
      <ekz>
        estas pli facile retrovi ion, kio situas je <klr>...</klr> konataj
        vojoj, ol ion lokitan sur tereno, kie voj<tld/>iloj mankas
        <fnt><bib>BonaLingvo</bib>, <lok>p. 64a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>panneau indicateur<klr> (de direction)</klr></trd>,
    <trd>panneau routier<klr> (de direction)</klr></trd>
  </trdgrp>
</drv>
</art>
