<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: gratif.xml,v 1.25 2025/04/22 06:38:40 revo Exp $">
<kap>
  <rad>gratifik</rad>/i <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="gratif.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="gratif.0i.EKON">
    <uzo tip="fak">EKON</uzo>
    <dif>
      <ref tip="super" cel="don.0i.disponigi">Doni</ref> la&ubreve;volan kromsalajron a&ubreve; rekompencan mondonacon:
      <ekz>
        mi infanece <tld/>is lin tro, rezistante la fortan deziron doni al li falsan
        kvinspesan moneron
        <fnt>
          <aut>Harry Harrison</aut>
          <vrk><url ref="https://eduinf.waw.pl/esp/lern/librejo/0065/0010.php"
              >Naski&gcirc;o De La Rustimuna &Scirc;talrato</url></vrk>
          <lok>&Ccirc;apitro 10</lok>
        </fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        sed kio estas por ni konsiloj de amiko, se la naturo <tld/>is nin per la spitema
        kaj malhumila karaktero
        <fnt>
          <aut>Aleksandro &Scirc;arov, trad. Andreo &Hcirc;i&jcirc;njak</aut>
          <vrk><url ref="https://esperanto.davidgsimpson.com/inko/207-7.pdf"
              >Pizulo kaj Simplulo</url></vrk>
          <lok>p. 97</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_r;&c_e;&c_m;&c_ib;&c_ja;&c_v;&c_a;&c_c;&c_mol;</trd>,
    <trd>&c_u;&c_z;&c_n;&c_a;&c_g;&c_a;&c_r;&c_o;&c_d;&c_zh;&c_v;&c_a;&c_c;&c_mol; <klr tip="amb">(&c_g;&c_r;&c_a;&c_sh;&c_y;&c_m;&c_a;)</klr></trd>
  </trdgrp>
  <trdgrp lng="ca">
    <trd>gratificar</trd>,
    <trd>recompensar</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>gratifikovat</trd>,
    <trd>mimo&rcaron;&aacute;dn&ecaron; odm&ecaron;nit</trd>,
    <trd>ud&ecaron;lit pen&ecaron;&zcaron;n&iacute; odm&ecaron;nu ,, poskytnout slevu z ochoty</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>eine <ind>Sonderzuwendung</ind> machen</trd>,
    <trd><klr>(jmd. mit etwas)</klr> bedenken</trd>,
    <trd>verg&uuml;ten</trd>,
    <trd>einen Bonus <ind>beigeben</ind></trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>tip</trd>,
    <trd>gratuity</trd>
  </trdgrp>
  <trd lng="es">gratificar</trd>
  <trd lng="fr">gratifier<klr tip="ind"> (une r&eacute;compense
  financi&egrave;re)</klr></trd>
  <trdgrp lng="hu">
    <trd>jutalmaz</trd>,
    <trd>premiz&aacute;l</trd>,
    <trd>gratifik&aacute;l</trd>
  </trdgrp>
  <trd lng="ja">&#19982;&#12360;&#12427;  <pr>&#12354;&#12383;&#12360;&#12427;</pr></trd>
  <trdgrp lng="nl">
    <trd>begunstigen</trd>,
    <trd>begiftigen met</trd>,
    <trd>trakteren</trd>
  </trdgrp>
  <trd lng="pt">gratificar<klr tip="amb"> (em dinheiro)</klr></trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_r;&c_je;&c_m;&c_i;&c_r;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_zh;&c_a;&c_l;&c_o;&c_v;&c_a;&c_t;&c_mol;</trd>,
    <trd>&c_n;&c_a;&c_g;&c_r;&c_a;&c_d;&c_i;&c_t;&c_mol;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>gratifikova&tcaron;</trd>,
    <trd>mimoriadne odmeni&tcaron;</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_n;&c_a;&c_g;&c_o;&c_r;&c_o;&c_d;&c_zh;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_p;&c_r;&c_je;&c_m;&c_ib;&c_ju;&c_v;&c_a;&c_t;&c_i;</trd>,
    <trd>&c_z;&c_a;&c_o;&c_h;&c_o;&c_ch;&c_u;&c_v;&c_a;&c_t;&c_i;</trd>
  </trdgrp>
</drv>

<drv mrk="gratif.0o">
  <kap><tld/>o</kap>
  <snc mrk="gratif.0o.EKON">
    <uzo tip="fak">EKON</uzo>
    <dif>
      Krompago, mondono libervola, kontraste al regula
      <ref tip="vid" cel="bonifik.0o.EKON">bonifiko</ref>:
      <ekz>
        se la foiro montros bonan profiton, mi volonte aldonos al vi <tld/>on &ccirc;e la fino
        <fnt>
          <bib>KrM</bib>
          <lok>6. Kiu Ne Riskas, Tiu Ne Gajnas.</lok>
        </fnt>;
      </ekz>
      <ekz>
        entute la kurta&gcirc;o sumi&gcirc;is je pli ol sepdekdu pundoj, mi donacis tri al David
        <tld/>e, dudek al Anne, kaj restis al mi preska&ubreve; kvardek
        <fnt>
          <bib>KrM</bib>
          <lok>9. Trafas Pugno Pugnon.</lok>
        </fnt>;
      </ekz>
      <ekz>
        &ccirc;u venis la <tld/>o de Lia Majesto por la printempa ofero
        <fnt><bib>RugxDom</bib> <lok>&ccirc;apitro 53a, p.
        184a</lok>
        </fnt>?
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="bonus.0o.EKON">bonuso<sncref/></ref>,
      <ref cel="gratif1.0o">gratifikacio</ref>
    </refgrp>
    <ref tip="vid" cel="mon.trink0o">trinkmono</ref>
  </snc>
  <rim>
    La&ubreve; <fnt><bib>BL</bib></fnt>: Prefere diru (instiga) <ke>rekompenco</ke>, <ke>kromsalajro</ke>, <ke>kromrekompenco</ke>.
  </rim>
  <trdgrp lng="be">
    <trd>&c_p;&c_r;&c_e;&c_m;&c_ib;&c_ja;</trd>,
    <trd>&c_u;&c_z;&c_n;&c_a;&c_g;&c_a;&c_r;&c_o;&c_d;&c_a; <klr tip="amb">(&c_g;&c_r;&c_a;&c_sh;&c_o;&c_v;&c_a;&c_ja;)</klr></trd>
  </trdgrp>
  <trdgrp lng="ca">
    <trd>gratificaci&oacute;</trd>,
    <trd>recompensa</trd>,
    <trd>propina</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>gratifikace</trd>,
    <trd>mimo&rcaron;&aacute;dn&aacute; pen&ecaron;&zcaron;. odm&ecaron;na</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Sonderzuwendung</trd>,
    <trd>Gratifikation</trd>,
    <trd>Extraverg&uuml;tung</trd>,
    <trd>Bonus</trd>,
    <trd>Zugabe</trd>
  </trdgrp>
  <trd lng="es">gratificaci&oacute;n</trd>
  <trdgrp lng="fr">
    <trd>gratification<klr tip="ind"> (r&eacute;compense
    financi&egrave;re)</klr></trd>,
    <trd>pourboire</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>jutalom</trd>,
    <trd>pr&eacute;mium</trd>,
    <trd>gratifik&aacute;ci&oacute;</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#29305;&#21029;&#25163;&#24403;  <pr>&#12392;&#12367;&#12409;&#12388;&#12390;&#12354;&#12390;</pr></trd>,
    <trd>&#12508;&#12540;&#12490;&#12473;  <pr>&#12412;&#12540;&#12394;&#12377;</pr></trd>,
    <trd>&#24515;&#20184;&#12369;  <pr>&#12371;&#12371;&#12429;&#12389;&#12369;</pr></trd>,
    <trd>&#12481;&#12483;&#12503;</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>gratificatie</trd>,
    <trd>bonus</trd>,
    <trd>drinkgeld</trd>,
    <trd>fooi</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>gratyfikacja</trd>,
    <trd>premia</trd>,
    <trd>nagroda</trd>,
    <trd>napiwek</trd>
  </trdgrp>
  <trdgrp lng="pt">
   <trd>gratifica&ccedil;&atilde;o<klr tip="amb"> (em dinheiro)</klr></trd>,
   <trd>b&ocirc;nus<klr tip="amb"> (em dinheiro)</klr></trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_n;&c_a;&c_g;&c_r;&c_a;&c_d;&c_a;</trd>,
    <trd>&c_p;&c_r;&c_je;&c_m;&c_i;&c_ja;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>gratifik&aacute;cia</trd>,
    <trd>mimoriadna pe&ncaron;a&zcaron;n&aacute; odmena</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_n;&c_a;&c_g;&c_o;&c_r;&c_o;&c_d;&c_a;</trd>,
    <trd>&c_p;&c_r;&c_je;&c_m;&c_ib;&c_ja;</trd>,
    <trd>&c_z;&c_a;&c_o;&c_h;&c_o;&c_ch;&c_je;&c_n;&c_n;&c_ja;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#29305;&#21029;&#27941;&#36028; <pr>t&egrave;bi&eacute;j&imacron;nti&emacron;</pr></trd>,
    <trd>&#22870;&#21169; <pr>ji&#462;ngl&igrave;</pr></trd>,
    <trd>&#32005;&#21033; <pr>h&oacute;ngl&igrave;</pr></trd>,
    <trd>&#22870;&#36175; <pr>ji&#462;ngsh&#462;ng</pr></trd>
  </trdgrp>
</drv>
