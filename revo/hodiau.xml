<kap>
   <ofc>*</ofc>
   <rad>hodia&ubreve;</rad>
</kap>

<drv mrk="hodiau.0">
  <kap><ofc>*</ofc><tld/></kap>
  <gra><vspec>adverbo</vspec></gra>
  <snc mrk="hodiau.0.KOMUNE">
    <dif>
      En la nuna <ref tip="super" cel="tag.0o">tago</ref>:
      <ekz>
        <tld/> vespere;
      </ekz>
      <ekz>
        <tld/> estas festo;
      </ekz>
      <ekz>
        <ind><tld/> por mono, morga&ubreve; senpage</ind>
        <trdgrp lng="es">
          <trd>prometer para ma&ntilde;ana lo que no se va a cumplir</trd>,
          <trd>ma&ntilde;ana se f&iacute;a</trd>
        </trdgrp>
        <trd lng="fr">demain on rase gratis</trd>
        <fnt><bib>PV</bib></fnt>;
      </ekz>
      <ekz>
        <tld/> &gcirc;i interesas la publikon, morga&ubreve; &gcirc;i povas esti indiferenta por &gcirc;i
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        lia sankteco, <tld/> severa, morga&ubreve; pardonos al ili, se ili humili&gcirc;os
        <fnt>
          <bib>Far3</bib>
          <lok>&Ccirc;apitro XIII</lok>
        </fnt>;
      </ekz>
      <ekz>
        <ind><tld/> forto, morga&ubreve; morto</ind>
        <trd lng="es">nada es para siempre</trd>
        <trd lng="fr">tout passe, tout casse</trd>
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        mi bezonas trafi Varsovion <tld/> matene &ccirc;ar mi havas gravan renkonti&gcirc;on
        <fnt>
          <aut>Konstanten Krysakov</aut>
          <vrk><url ref="&Monato;/2000/006805.php">Kota akvo</url></vrk>
          <bib>Monato</bib>
          <lok>2000/03, p. 28</lok>
          </fnt>.
      </ekz>
    </dif>
    <trd lng="th">&#xE27;&#xE31;&#xE19;&#xE19;&#xE35;&#xE49;</trd>
  </snc>
  <snc mrk="hodiau.0.nuntempe">
    <dif>
      <ref tip="dif" cel="nun.0tempe">Nuntempe</ref>:
      <ekz>
        ankora&ubreve; <tld/> mi estas tiel forta, kiel en la tago, kiam Moseo min sendis
        <fnt>
          <bib>MT</bib>
          <lok>Josuo 14:11</lok>
        </fnt>;
      </ekz>
      <ekz>
        en 26 landoj de l' mondo ne sufi&ccirc;as anka&ubreve; <tld/> la nunaj akvorezervoj e&ccirc; por la
        minimumaj bezonoj de la propra lo&gcirc;antaro
        <fnt>
       <aut>Evgeni Georgiev</aut>
          <vrk><url ref="&Monato;/2000/006866.php">La blua &leftquot;oro&#x201D; &ccirc;iam malsufi&ccirc;os</url></vrk>
          <bib>Monato</bib>
          <lok>2000/03, p. 20</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="de">heutzutage</trd>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_jo;&c_n;&c_mol;&c_n;&c_ja;</trd>,
    <trd>&c_s;&c_ja;&c_g;&c_o;&c_d;&c_n;&c_ja;</trd>,
    <trd>&c_s;&c_ja;&c_g;&c_o;&c_n;&c_mol;&c_n;&c_ja;</trd>,
  </trdgrp>
  <trd lng="bo">&#xF51;&#xF72;&#xF0B;&#xF62;&#xF72;&#xF44;&#xF0B;</trd>
  <trd lng="br">hiziv</trd>
  <trd lng="cs">dnes</trd>
  <trd lng="de">heute</trd>
  <trd lng="el">&sigma;&eta_ton;&my;&epsilon;&rho;&alfa;</trd>
  <trd lng="es">hoy</trd>
  <trd lng="en">today</trd>
  <trd lng="fi">t&auml;n&auml;&auml;n</trd>
  <trd lng="fr">aujourd'hui</trd>
  <trd lng="he">&he;&yod;&vav;&fmem;</trd>
  <trd lng="hu">ma</trd>
  <trd lng="ia">hodie</trd>
  <trd lng="id"><ind>hari</ind> ini</trd>
  <trd lng="ie">hodie</trd>
  <trdgrp lng="io">
    <trd>cadie</trd>,
    <trd>hodie</trd>
  </trdgrp>
  <trd lng="it">oggi</trd>
  <trd lng="ja">&#x4ECA;&#x65E5; <pr>&#x304D;&#x3087;&#x3046;</pr></trd>
  <trd lng="nl">vandaag</trd>
  <trdgrp lng="pl">
    <trd>dzi&sacute;</trd>,
    <trd>dzisiaj</trd>
  </trdgrp>
  <trd lng="pt">hoje</trd>
  <trdgrp lng="ro">
    <trd>ast&abreve;zi</trd>,
    <trd>azi</trd>,
  </trdgrp>
  <trd lng="ru">&c_s;&c_je;&c_g;&c_o;&c_d;&c_n;&c_ja;</trd>
  <trd lng="sv">i <ind>dag</ind></trd>
  <trdgrp lng="tok">
    <trd><ind>tenpo suno ni</ind> la</trd>,
    <trd>lon <ind>tenpo suno ni</ind></trd>
  </trdgrp>
  <trd lng="tr">bug&uuml;n</trd>
  <trd lng="uk">&c_s;&#x44C;&#x43E;&c_g;&#x43E;&c_d;&#x43D;&c_ib;</trd>
  <trd lng="vo">adelo</trd>
  <trdgrp lng="zh">
    <trd>&#x4ECA;&#x65E5; <pr>j&#x12B;nr&#xEC;</pr></trd>,
    <trd>&#x4ECA;&#x5929; <pr>j&#x12B;nti&#x101;n</pr></trd>,
    <trd>&#x672C;&#x65E5; <pr>b&#x11B;nr&#xEC;</pr></trd>,
    <trd>&#x4ECA; <pr>j&#x12B;n</pr></trd>,
    <trd>&#x4ECA;&#x671D; <pr>j&#x12B;nzh&#x101;o</pr></trd>,
    <trd>&#x4ECA;&#x513F; <pr>j&#x12B;nr</pr></trd>,
    <trd>&#x5982;&#x4ECA; <pr>r&#xFA;j&#x12B;n</pr></trd>,
    <trd>&#x5F53;&#x4ECA; <pr>d&#x101;ngj&#x12B;n</pr></trd>
  </trdgrp>
</drv>

<drv mrk="hodiau.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc mrk="hodiau.0a.cxitaga">
    <dif>
      Okazanta <tld/>:
      <ekz>
        mi transiras al la vera temo de mia <tld/>a parolado
        <fnt>
          <aut>L. L. Zamenhof</aut>
          <vrk>parolado &ccirc;e Tria Kongreso 1907 en Cambridge</vrk>
        </fnt>;
      </ekz>
      <ekz>
        la <tld/>a atako kontra&ubreve; la temploj estis aran&gcirc;ita de la pastroj
        <fnt>
          <bib>Far3</bib>
          <lok>&ccirc;apitro 16a</lok>
        </fnt>;
      </ekz>
      <ekz>
        por la <tld/>a tago mi ricevis duoblan pagon
        <fnt><bib>F</bib>, <lok>&FE; 14</lok></fnt>.
      </ekz>
    </dif>
    <trd lng="ja">&#x4ECA;&#x65E5;&#x306E; <pr>&#x304D;&#x3087;&#x3046;&#x306E;</pr></trd>
    <trd lng="nl">van <ind>vandaag</ind></trd>
  </snc>
  <snc mrk="hodiau.0a.nuntempa">
    <dif>
      <ref tip="vid" cel="temp.nun0o">Nuntempa</ref>:
      <ekz>
        kiujn lingvojn oni devus lerni en la <tld/>a mondo
        <fnt>
          <aut>Ivo Lapenna</aut>
          <vrk>Esperanto en Perspektivo</vrk>
          <lok>unua parto, &ccirc;apitro 1.4</lok>
        </fnt>?
      </ekz>
      <ekz>
        la <tld/>a Irlando ne estas ideala lando por fervoja turismo
        <fnt>
          <aut>Albisturo Kvinke</aut>
          <vrk><url ref="&Monato;/2015/011241.php">
            Rondvoja&gcirc;i trajne</url></vrk>
          <bib>Monato</bib>
          <lok>2015/8-9, p. 22</lok>
        </fnt>;
      </ekz>
      <ekz>
        la sciencfikciaj serioj kaj filmoj, libre a&ubreve; ekrane, ofte ne nur
        montras la eblan vivon en la kosmo a&ubreve; la estonteco, sed anka&ubreve;
        provas speguli kaj kritiki la situacion en nia <tld/>a socio
        <fnt>
          <aut>Andr&eacute; M&uuml;ller</aut>
          <vrk><url ref="&Tekstaro;?nomo=kontakto-2011-2019&amp;uzistreketojn=&amp;tipo=&amp;sekcio=kontakto-694&amp;antauasekcio=1&amp;postasekcio=1">
            Minoritatoj en Star Trek</url></vrk>
          <lok>Kontakto 2014:3</lok>
        </fnt>.
      </ekz>
    </dif>  
    <trdgrp lng="ja">
      <trd>&#x4ECA;&#x6642;&#x306E; <pr>&#x3044;&#x307E;&#x3069;&#x304D;&#x306E;</pr></trd>,
      <trd>&#x3053;&#x306E;&#x9803;&#x306E; <pr>&#x3053;&#x306E;&#x3054;&#x308D;&#x306E;</pr></trd>,
    </trdgrp>
    <trd lng="nl">van <ind>vandaag de dag</ind></trd>
  </snc>
  <trd lng="be">&c_s;&c_jo;&c_n;&c_mol;&c_n;&c_ja;&c_sh;&c_n;&c_ib;</trd>
  <trd lng="de">heutiger</trd>
  <trd lng="en">of today</trd>
  <trd lng="es">de hoy en d&iacute;a</trd>
  <trdgrp lng="fi">
    <trd>t&auml;m&auml;np&auml;iv&auml;inen</trd>,
  </trdgrp>
  <trdgrp lng="fr">
    <trd>d'<ind>aujourd'hui</ind></trd>,
    <trd>pr&eacute;sent<klr tip="ind"> (d'aujourd'hui)</klr></trd>
  </trdgrp>
  <trdgrp lng="io">
    <trd>cadia</trd>,
    <trd>hodia</trd>
  </trdgrp>
  <trd lng="it">odierno</trd>
  <trd lng="pl">dzisiejszy</trd>
  <trd lng="tok">pi <ind>tenpo suno ni</ind></trd>
  <trdgrp lng="uk">
    <trd>&c_s;&#x44C;&#x43E;&c_g;&#x43E;&c_d;&#x43D;&c_ib;&c_sh;&#x43D;&c_ib;&c_j;</trd>,
    <trd>&#x43D;&c_i;&#x43D;&c_ib;&c_sh;&#x43D;&c_ib;&c_j;</trd>
  </trdgrp>
  <trd lng="vo">adelik</trd>
  <trd lng="zh">&#x5F53;&#x4ECA; <pr>d&#x101;ngj&#x12B;n</pr></trd>
</drv>

<drv mrk="hodiau.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">RAR</uzo>
  <snc mrk="hodiau.0o.tago">
    <dif>
      La nuna tago:
      <ekz>
        por plani la <tld/>on kaj e&ccirc; la venontajn tagojn, mi &jcirc;us
        konsultis veterprognozon, vendejajn malferm-horojn kaj
        hortabelojn de trajno
        <fnt>
          <vrk><url ref="&Tekstaro;?nomo=kontakto-2011-2019&amp;uzistreketojn=&amp;tipo=&amp;sekcio=kontakto-713&amp;antauasekcio=1&amp;postasekcio=1">
          Tiel la mondo...</url></vrk>
          <lok>Kontakto</lok>
        </fnt>;
      </ekz>
      <ekz>
        kio alia estas la vivo, ol diferenco inter la hiera&ubreve;o kaj
        <tld/>o, kiam oni atendas ion de la morga&ubreve;o
        <fnt>
          <aut>S&aacute;ndor Szathm&aacute;ri</aut>:
          <vrk>Voja&gcirc;o al Kazohinio</vrk>
          <lok>&ccirc;apitro 6a</lok>
        </fnt>.
      </ekz>
    </dif>
    <trd lng="be">&c_s;&c_jo;&c_n;&c_mol;&c_n;&c_ja;&c_sh;&c_n;&c_ib; &c_d;&c_z;&c_je;&c_n;&c_mol;</trd>
  </snc>
  <snc mrk="hodiau.0o.nuntempo">
    <dif>
      Nuna epoko, estanta tempo,
      <ref tip="sin" cel="temp.nun0o">nuntempo</ref>:
      <ekz>
        e&ccirc; la nomo mem de la plej grava organiza&jcirc;o de la <tld/>o ne
        estas la sama en la rusa kaj en la angla a&ubreve; franca
        <fnt>
          <aut>Ivo Lapenna</aut>
          <vrk>Esperanto en Perspektivo</vrk>
          <lok>unua parto, &ccirc;apitro 1.3.1</lok>
        </fnt>;
      </ekz>
      <ekz>
        pluraj konceptoj pri la evoluo de la homaro kaj de la politikaj
        situacioj de la lasta jarcento nenion speciale novan diras al
        atenta observanto de la <tld/>o
        <fnt>
          <aut>Carlo Minnaja</aut>
          <vrk><url ref="&Monato;/2003/008022.html">
          Tridek jaroj da sa&gcirc;o</url></vrk>
          <bib>Monato</bib>
        </fnt>.
      </ekz>
    </dif>
    <trdgrp lng="be">
      <trd>&c_c;&c_ja;&c_p;&c_je;&c_r;&c_a;&c_sh;&c_n;&c_ib; &c_ch;&c_a;&c_s;</trd>,
      <trd>&c_b;&c_ja;&c_g;&c_u;&c_ch;&c_a;&c_ja; &c_e;&c_p;&c_o;&c_h;&c_a;</trd>,
      <trd>&c_c;&c_ja;&c_p;&c_je;&c_r;</trd>
    </trdgrp>
  </snc>
  <trd lng="de">Heute</trd>
  <trd lng="en">today<klr tip="amb"> (noun)</klr></trd>
  <trdgrp lng="io">
    <trd>cadio</trd>,
    <trd>hodio</trd>
  </trdgrp>
  <trd lng="nl">vandaag<klr tip="amb"> (z.nw.)</klr></trd>
  <trd lng="tok">tenpo suno ni</trd>
  <trd lng="vo">adel</trd>
  <trd lng="zh">&#x4ECA;&#x65E5; <pr>j&#x12B;nr&#xEC;</pr></trd>
</drv>
</art>
