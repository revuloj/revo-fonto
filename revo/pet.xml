<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>pet</rad>/i
</kap>
<drv mrk="pet.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>x</vspec></gra>
  <snc>
    <dif>
      Sciigi al iu, ke oni deziras ricevi ion de li:
      <ekz>
        <tld/>i informon,
        helpon de iu, el iu, al iu;
      </ekz>
      <ekz>
        <tld/>i iun pri helpo, konsilo, permeso, pardono;
      </ekz>
      <ekz>
        sinjorino <tld/>is de &scirc;i trinki<fnt>Z</fnt>;
      </ekz>
      <ekz>
        kiu ne <tld/>as, tiu ne ricevas
        <fnt><bib>PrV</bib></fnt>.
      </ekz>
    </dif>
    <refgrp tip="sub">
      <ref cel="postul.0i">postuli</ref>.
    </refgrp>
  </snc>
  <snc>
    <dif>
      Sciigi al iu, ke oni deziras, ke li faru ion:
      <ekz>
        li <tld/>as, ke mi
        estu atenta<fnt>Z</fnt>;
      </ekz>
      <ekz>
        ili <tld/>is lin alveni pli proksime<fnt>K</fnt>;
      </ekz>
      <ekz>
        mi <tld/>as vin kredi<fnt>Z</fnt>;
      </ekz>
      <ekz>
        por gasto ne<tld/>ita mankas kulero
        <fnt><bib>PrV</bib></fnt>;
      </ekz>
      <ekz>
        <tld/>u lin al mi<fnt>Z</fnt>
        <klr>(<tld/>u ke li venu al mi)</klr>;
      </ekz>
      <ekz>
        mi sendis <tld/>i ilin &ccirc;itien<fnt>Z</fnt>;
      </ekz>
      <ekz>
        sidi&gcirc;u, mi <tld/>as.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="invit.0i">inviti</ref>.
    </refgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_r;&c_a;&c_s;&c_ib;&c_c;&c_mol;</trd>,
    <trd>&c_p;&c_a;&c_p;&c_r;&c_a;&c_s;&c_ib;&c_c;&c_mol;</trd>
  </trdgrp>
  <trd lng="cs">prosit</trd>
  <trd lng="de">bitten</trd>
  <trd lng="fr">demander<klr> (objet, renseignement...)</klr></trd>
  <trd lng="en">ask</trd>
  <trd lng="he">&lamed;<ind>&bet;&qof;&shin;</ind></trd>
  <trdgrp lng="nl">
    <trd>vragen<klr tip="ind"> (verzoeken)</klr></trd>,
    <trd>verzoeken</trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_i;&c_t;&c_mol;</trd>
</drv>

<drv mrk="pet.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Ago <tld/>i:
      <ekz>
        la <tld/>o de &ccirc;efo estas ordono;
      </ekz>
      <ekz>
        direkti<fnt>Z</fnt>,
      </ekz>
      <ekz>
        fari<fnt>Z</fnt>,
      </ekz>
      <ekz>
        <tld/>i<fnt>Z</fnt>
      </ekz>
      <ekz>
        <tld/>on al iu;
      </ekz>
      <ekz>
        prema, insista <tld/>o.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_r;&c_o;&c_s;&c_mol;&c_b;&c_a;</trd>
  <trd lng="de">Bitte</trd>
  <trd lng="fr">demande<klr> (objet, renseignement...)</klr></trd>
  <trd lng="he">&bet;&qof;&shin;&he;</trd>
  <trdgrp lng="nl">
    <trd>vraag<klr tip="ind"> (verzoek)</klr></trd>,
    <trd>verzoek</trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_mol;&c_b;&c_a;</trd>
</drv>

<drv mrk="pet.0egi">
  <kap><tld/>egi</kap>
  <gra><vspec>x</vspec></gra>
  <snc>
    <dif>
      Insiste kaj humile <tld/>i.
    </dif>
    <ref tip="sin" cel="suplik.0i">supliki</ref>
  </snc>
  <trd lng="be">&c_u;&c_m;&c_o;&c_l;&c_mol;&c_v;&c_a;&c_c;&c_mol;</trd>
  <trd lng="fr">supplier</trd>
  <trd lng="he">&lamed;&he;&tav;<ind>&het;&nun;&fnun;</ind></trd>
  <trd lng="nl">smeken</trd>
  <trd lng="ru">&c_u;&c_m;&c_o;&c_l;&c_ja;&c_t;&c_mol;</trd>
</drv>

<drv mrk="pet.por0i">
  <kap>por<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      <tld lit="P"/>i de iu, ke li permesu foriri:
      <ekz>
        sin for<tld/>i de iu<fnt>Z</fnt>.
      </ekz>
    </dif>
    <rim>
      Nekompreneblas: la deriva&jcirc;o estas &quot;Porpeti&quot;, la 
ekzemplo enhavas
      &quot;Forpeti&quot;. &Ccirc;u la vortoj estas sinonimaj? [Dmitri 
Gabinski]
    </rim>
  </snc>
  <trd lng="be">&c_a;&c_d;&c_p;&c_r;&c_a;&c_s;&c_ib;&c_c;&c_c;&c_a;</trd>
  <trd 
lng="ru">&c_o;&c_t;&c_p;&c_r;&c_o;&c_s;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
</drv>

<drv mrk="pet.pro0i">
  <kap>pro<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Interhelpi por havigi al iu pardonon.
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_r;&c_a;&c_s;&c_ib;&c_c;&c_mol; <klr>(&c_z;&c_a; 
&c_k;&c_a;&c_g;&c_o;&c_s;&c_mol;&c_c;&c_ib;)</klr></trd>
  <trdgrp lng="fr">
    <trd>demander la <ind>gr&acirc;ce</ind> de</trd>,
    <trd>s'<ind>entremettre</ind> en faveur de</trd>
  </trdgrp>
  <trd lng="nl">voorspreken</trd>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_i;&c_t;&c_mol; <klr 
tip="amb">(&c_z;&c_a; &c_k;&c_o;&c_g;&c_o;-&c_t;&c_o;)</klr></trd>
</drv>

<drv mrk="pet.0skribo">
  <kap><tld/>skribo</kap>
  <snc>
    <dif>
      Skribita <tld/>o al oficialulo:
      <ekz>
        &scirc;i estis prezentinta <tld/>skribon al la re&gcirc;o
        <fnt><bib>Aventuroj</bib>, <lok>&ccirc;apitro 19a, p. 
52a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_r;&c_o;&c_s;&c_mol;&c_b;&c_a; 
<klr>(&c_p;&c_ib;&c_s;&c_mol;&c_m;&c_o;&c_v;&c_a;&c_ja;)</klr></trd>,
    <trd>&c_z;&c_a;&c_ja;&c_v;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>lettre de <ind>dol&eacute;ances</ind></trd>,
    <trd>p&eacute;tition</trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>verzoekschrift</trd>,
    <trd>petitie</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_p;&c_r;&c_o;&c_sh;&c_je;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_z;&c_a;&c_ja;&c_v;&c_l;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
</drv>

<drv mrk="pet.0veturi">
  <kap><tld/>veturi</kap>
  <snc>
    <dif>
      Voja&gcirc;i en a&ubreve;to a&ubreve; kamiono, kies kondukanton 
oni haltigis sur la vojo
      kaj petis pri transportado.
    </dif>
  </snc>
  <trd 
lng="be">&c_p;&c_a;&c_d;&c_a;&c_r;&c_o;&c_zh;&c_n;&c_ib;&c_ch;&c_a;&c_c;&c_mol; 
<ind>&c_a;&c_w;&c_t;&c_a;&c_s;&c_t;&c_o;&c_p;&c_a;&c_m;</ind></trd>
  <trdgrp lng="fr">
    <trd>voyager en <ind>auto-stop</ind></trd>,
    <trd>voyager en <ind>stop</ind></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>liften</trd>
  </trdgrp>
  <trd 
lng="ru">&c_p;&c_u;&c_t;&c_je;&c_sh;&c_je;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_mol; 
&c_a;&c_v;&c_t;&c_o;&c_s;&c_t;&c_o;&c_p;&c_o;&c_m;</trd>
</drv>
</art>
