<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>pet</rad>/i
</kap>
<drv mrk="pet.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>x</vspec></gra>
  <snc>
    <dif>
      Sciigi al iu, ke oni deziras ricevi ion de li:
      <ekz>
        <tld/>i informon,
        helpon de iu, el iu, al iu;
      </ekz>
      <ekz>
        <tld/>i iun pri helpo, konsilo, permeso, pardono;
      </ekz>
      <ekz>
        sinjorino <tld/>is de &scirc;i trinki<fnt>Z</fnt>;
      </ekz>
      <ekz>
        kiu ne <tld/>as, tiu ne ricevas<fnt>Z</fnt>.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="postul.0i">postuli</ref>.
    </refgrp>
  </snc>
  <snc>
    <dif>
      Sciigi al iu, ke oni deziras, ke li faru ion:
      <ekz>
        li <tld/>as, ke mi
        estu atenta<fnt>Z</fnt>;
      </ekz>
      <ekz>
        ili <tld/>is lin alveni pli proksime<fnt>K</fnt>;
      </ekz>
      <ekz>
        mi <tld/>as vin kredi<fnt>Z</fnt>;
      </ekz>
      <ekz>
        por gasto ne<tld/>ita mankas kulero<fnt>Z</fnt>;
      </ekz>
      <ekz>
        <tld/>u lin al mi<fnt>Z</fnt>
        <klr>(<tld/>u ke li venu al mi)</klr>;
      </ekz>
      <ekz>
        mi sendis <tld/>i ilin &ccirc;itien<fnt>Z</fnt>;
      </ekz>
      <ekz>
        sidi&gcirc;u, mi <tld/>as.
      </ekz>
    </dif>
    <refgrp tip="sin">
      <ref cel="invit.0i">inviti</ref>.
    </refgrp>
  </snc>
  <trd lng="cs">prosit</trd>
  <trd lng="de">bitten</trd>
  <trd lng="en">ask</trd>
  <trdgrp lng="nl">
    <trd>vragen<klr tip="ind"> (verzoeken)</klr></trd>,
    <trd>verzoeken</trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_i;&c_t;&c_mol;</trd>
</drv>

<drv mrk="pet.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Ago <tld/>i:
      <ekz>
        la <tld/>o de &ccirc;efo estas ordono;
      </ekz>
      <ekz>
        direkti<fnt>Z</fnt>,
      </ekz>
      <ekz>
        fari<fnt>Z</fnt>,
      </ekz>
      <ekz>
        <tld/>i<fnt>Z</fnt>
      </ekz>
      <ekz>
        <tld/>on al iu;
      </ekz>
      <ekz>
        prema, insista <tld/>o.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Bitte</trd>
  <trdgrp lng="nl">
    <trd>vraag<klr tip="ind"> (verzoek)</klr></trd>,
    <trd>verzoek</trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_mol;&c_b;&c_a;</trd>
</drv>

<drv mrk="pet.0egi">
  <kap><tld/>egi</kap>
  <gra><vspec>x</vspec></gra>
  <snc>
    <dif>
      Insiste kaj humile <tld/>i.
    </dif>
  </snc>
  <trd lng="nl">smeken</trd>
  <trd lng="ru">&c_u;&c_m;&c_o;&c_l;&c_ja;&c_t;&c_mol;</trd>
</drv>

<drv mrk="pet.por0i">
  <kap>por<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      <tld lit="P"/>i de iu, ke li permesu foriri:
      <ekz>
        sin for<tld/>i de iu<fnt>Z</fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="ru">&c_o;&c_t;&c_p;&c_r;&c_o;&c_s;&c_i;&c_t;&c_mol;&c_s;&c_ja;</trd>
</drv>

<drv mrk="pet.pro0i">
  <kap>pro<tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc>
    <dif>
      Interhelpi por havigi al iu pardonon.
    </dif>
  </snc>
  <trd lng="nl">voorspreken</trd>
  <trd lng="ru">&c_p;&c_r;&c_o;&c_s;&c_i;&c_t;&c_mol; <klr tip="amb">(&c_z;&c_a; &c_k;&c_o;&c_g;&c_o;-&c_t;&c_o;)</klr></trd>
</drv>

<drv mrk="pet.0skribo">
  <kap><tld/>skribo</kap>
  <snc>
    <dif>
      Skribita <tld/>o al oficialulo.
    </dif>
  </snc>
  <trdgrp lng="nl">
    <trd>verzoekschrift</trd>,
    <trd>petitie</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_p;&c_r;&c_o;&c_sh;&c_je;&c_n;&c_i;&c_je;</trd>,
    <trd>&c_z;&c_a;&c_ja;&c_v;&c_l;&c_je;&c_n;&c_i;&c_je;</trd>
  </trdgrp>
</drv>

<drv mrk="pet.0veturi">
  <kap><tld/>veturi</kap>
  <snc>
    <dif>
      Voja&gcirc;i en a&ubreve;to a&ubreve; kamiono, kies kondukanton oni haltigis sur la vojo
      kaj petis pri transportado.
    </dif>
  </snc>
  <trdgrp lng="nl">
    <trd>liften</trd>
  </trdgrp>
  <trd lng="ru">&c_p;&c_u;&c_t;&c_je;&c_sh;&c_je;&c_s;&c_t;&c_v;&c_o;&c_v;&c_a;&c_t;&c_mol; &c_a;&c_v;&c_t;&c_o;&c_s;&c_t;&c_o;&c_p;&c_o;&c_m;</trd>
</drv>
</art>
