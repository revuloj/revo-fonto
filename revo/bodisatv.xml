<vortaro>
<art mrk="$Id: bodisatv.xml,v 1.11 2020/10/04 10:32:12 revo Exp $">
<kap>
  <rad>bodisatv</rad>/o <fnt><bib>SPV</bib></fnt>
</kap>
<drv mrk="bodisatv.0o">
  <kap><tld/>o</kap>
  <snc mrk="bodisatv.0o.BUD">
    <uzo tip="fak">BUD</uzo>
    <dif>
      Kvaza&ubreve;-<ref tip="super" cel="buda.0o.nivelo">budao</ref>,
      rezignanta pri propra savo por unue helpi al aliaj
      vivantoj savi&gcirc;i:
      <ekz>
        &ccirc;iuj <tld/>oj a&ubreve;dinte &ccirc;i tiun Darmon jam forigis sian dubon
        <fnt>
        <aut>trad. Asano San&ccirc;i</aut>,
        <vrk><url ref="http://www001.upp.so-net.ne.jp/jble/sutro/sps02.html">Saddharma-Pundarika
        Sutro, 2</url></vrk>,
        <lok>La Japana Budhano, 1979-80, numero 187-190</lok>
        </fnt>;
      </ekz>
      <ekz>
        ili kamuflis figurojn de Sankta Maria kiel tiun de <tld lit="B"/>o
        <fnt>
          <bib>Monato</bib>
          <aut>Isikawa Takasi</aut>
          <vrk><url ref="https://www.monato.be/2015/011398.php">Sekretaj kristanoj, &ccirc;u veraj kristanoj?</url></vrk>
          <lok>2015</lok>
        </fnt>;
      </ekz>
      <ekz>
        li konigas kaj instruas la Veron al erarinta homo kaj tiel ebligas ties
        eventualan <tld/>i&gcirc;on
        <fnt>
          <bib>Monato</bib>
          <aut>Donald Broadribb</aut>
          <vrk><url ref="https://www.monato.be/2007/009218.php">Modernantikvaj fabeloj</url></vrk>
          <lok>2007</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_b;&c_a;&c_d;&c_h;&c_ib;&c_s;&c_a;&c_t;&c_v;&c_a;</trd>
  <trd lng="cs">b&oacute;dhisattva</trd>
  <trd lng="de">Bodhisattva</trd>
  <trd lng="fr">bodhisattva</trd>
  <trd lng="hu">bodhiszattva</trd>
  <trdgrp lng="pt">
    <trd>bodisatva</trd>,
    <trd>bodissatva</trd>
  </trdgrp>
  <trdgrp lng="ru">
    <trd>&c_b;&c_o;&c_d;&c_h;&c_i;&c_s;&c_a;&c_t;&c_v;&c_a;</trd>,
    <trd>&c_b;&c_o;&c_d;&c_i;&c_s;&c_a;&c_t;&c_v;&c_a;</trd>
  </trdgrp>
  <trd lng="sa">&#2348;&#2379;&#2343;&#2367;&#2360;&#2340;&#2381;&#2340;&#2381;&#2357;</trd>
  <trdgrp lng="sk">
    <trd>bodhisatva</trd>,
    <trd>b&oacute;disattva</trd>
  </trdgrp>
</drv>
</art>
