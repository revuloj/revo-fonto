<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>1</ofc>
  <rad>sarkasm</rad>/o
</kap>
<drv mrk="sarkas.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">POE</uzo>
  <snc>
    <dif>
      Akra kaj mordanta <ref tip="super" cel="mok.0o">moko</ref>.
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</trd>
  <trd lng="bg">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_malmol;&c_m;</trd>
  <trd lng="de">Sarkasmus</trd>
  <trd lng="en">sarcasm</trd>
  <trd lng="es">sarcasmo</trd>
  <trdgrp lng="fa">
    <trd>&a_T;&a_ayn;&a_n;&a_h;</trd>,
    <trd>&a_n;&f_y;&a_sh;</trd>,
    <trd>&f_k;&a_n;&a_A;&f_y;&a_h;</trd>
  </trdgrp>
  <trd lng="fr">sarcasme</trd>
  <trdgrp lng="hu">
    <trd>szarkazmus</trd>,
    <trd>mar&oacute; <ind>g&uacute;ny</ind></trd>
  </trdgrp>
  <trd lng="it">sarcasmo</trd>
  <trd lng="nl">sarcasme</trd>
  <trd lng="pl">sarkazm</trd>
  <trdgrp lng="pt">
   <trd>sarcasmo</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</trd>
  <trd lng="sk">sarkazmus</trd>
</drv>

<drv mrk="sarkas.0a">
  <kap><tld/>a</kap>
  <uzo tip="stl">POE</uzo>
  <snc>
    <dif>
      Akre, vunde moka:
      <ekz>
        kun <tld/>a rideto sur la lipoj
        <fnt><bib>FK</bib>, <lok>3, anekdotoj</lok></fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="sardon.0a">sardona</ref>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_y;&c_ch;&c_n;&c_y;</trd>,
    <trd>&c_s;&c_a;&c_r;&c_d;&c_a;&c_n;&c_ib;&c_ch;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="bg">&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_i;&c_ch;&c_je;&c_n;</trd>
  <trdgrp lng="en">
    <trd>sarcastic</trd>,
    <trd>sardonic</trd>
  </trdgrp>
  <trdgrp lng="fa">
    <trd>&a_T;&a_ayn;&a_n;&a_h;&zwnj;&a_A_madda;&a_m;&f_y;&a_z;</trd>,
    <trd>&f_k;&a_n;&a_A;&f_y;&a_h;&zwnj;&a_A_madda;&a_m;&f_y;&a_z;</trd>,
    <trd>&a_n;&f_y;&a_sh;&a_d;&a_A;&a_r;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>sarcastique</trd>,
    <trd>sardonique</trd>
  </trdgrp>
  <trd lng="it">sarcastico</trd>
  <trd lng="pl">sarkastyczny</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>,
    <trd>&c_s;&c_a;&c_r;&c_d;&c_o;&c_n;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  </trdgrp>
</drv>
</art>
