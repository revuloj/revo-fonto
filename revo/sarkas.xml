<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: sarkas.xml,v 1.30 2023/11/04 21:20:14 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>sarkasm</rad>/o
  <fnt><bib>JED</bib></fnt>
</kap>
<drv mrk="sarkas.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">POE</uzo>
  <snc mrk="sarkas.0o.KOMUNE">
    <dif>
      Akra kaj mordanta <ref tip="super" cel="mok.0o">moko</ref>:
      <ekz>
        sur la viza&gcirc;o de Sfinkso estis nenia krueleco, sed rezignacio, en &gcirc;ia rideto
        estis nenia <tld/>o, sed melankolio
        <fnt>
          <bib>Far2</bib>
          <lok>&Ccirc;apitro XXIV</lok>
        </fnt>;
      </ekz>
      <ekz>
        sinjoro <nom>Billing</nom>, male, estis tre malvarmeta, parolante kun sia kutima maldol&ccirc;a,
        mordanta <tld/>o, kompatinda sinjoro <nom>Robinson</nom> pasigis treege malagrablan
        duonhoron
        <fnt>
          <bib>MrA</bib>
          <lok>&Ccirc;apitro V</lok>
        </fnt>;
      </ekz>
      <ekz>
        ironio povas esti bonkora, skeptika, bruta, maldol&ccirc;a, acida, veneniga, tre forta
        kaj pika ironio fari&gcirc;as <tld/>o
        <fnt>
          <bib>Ret</bib>
          <lok>Dua Parto</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="vid" cel="ironi.0o">ironio</ref>
  </snc>
  <trd lng="be">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</trd>
  <trd lng="bg">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_malmol;&c_m;</trd>
  <trdgrp lng="cs">
    <trd>jedovatost</trd>,
    <trd>j&iacute;zlivost</trd>,
    <trd>sarkazmus</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Sarkasmus</trd>,
    <trd>bei&szlig;ender <ind>Spott</ind></trd>,
    <trd>Bissigkeit <klr>(Sarkasmus)</klr></trd>
  </trdgrp>
  <trd lng="en">sarcasm</trd>
  <trd lng="es">sarcasmo</trd>
  <trdgrp lng="fa">
    <trd>&a_T;&a_ayn;&a_n;&a_h;</trd>,
    <trd>&a_n;&f_y;&a_sh;</trd>,
    <trd>&f_k;&a_n;&a_A;&f_y;&a_h;</trd>
  </trdgrp>
  <trd lng="fr">sarcasme</trd>
  <trdgrp lng="hu">
    <trd>szarkazmus</trd>,
    <trd>mar&oacute; <ind>g&uacute;ny</ind></trd>
  </trdgrp>
  <trd lng="it">sarcasmo</trd>
  <trdgrp lng="ja">
    <trd>&#36763;&#36771;&#12394;&#30382;&#32905;  <pr>&#12375;&#12435;&#12425;&#12388;&#12394;&#12402;&#12395;&#12367;</pr></trd>,
    <trd>&#12354;&#12390;&#12371;&#12377;&#12426;</trd>,
    <trd>&#23244;&#12415;  <pr>&#12356;&#12420;&#12415;</pr></trd>
  </trdgrp>
  <trd lng="nl">sarcasme</trd>
  <trd lng="pl">sarkazm</trd>
  <trdgrp lng="pt">
   <trd>sarcasmo</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</trd>
  <trdgrp lng="sk">
    <trd>jedovatos&tcaron;</trd>,
    <trd>sarkazmus</trd>
  </trdgrp>
  <trd lng="uk">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</trd>
</drv>

<drv mrk="sarkas.0a">
  <kap><tld/>a</kap>
  <uzo tip="stl">POE</uzo>
  <snc mrk="sarkas.0a.KOMUNE">
    <dif>
      Akre, vunde moka;
      <ref tip="sin" cel="sardon.0a">sardona</ref>:
      <ekz>
        <nom>Wygrycz</nom> &scirc;ajnigis <tld/>an ridon, sed oni povis rimarki, ke la opinio de la gasto
        flatis kaj &gcirc;ojigis lin
        <fnt>
          <bib>IK</bib>
          <lok>&Ccirc;aptiro III</lok>
        </fnt>;
      </ekz>
      <ekz>
        tuja rediro venis de la knabino, e&ccirc; ankora&ubreve; pli <tld/>a: &ndash; kruela! tio sonas
        bele el via bu&scirc;o
        <fnt>
          <bib>MrA</bib>
          <lok>&Ccirc;apitro XV</lok>
        </fnt>;
      </ekz>
      <ekz>
        li estis devigita a&ubreve;skulti la <tld/>ajn rimarkojn de la du amikoj, kiuj lin
        demandis kial li ne kondukis kun si la &leftquot;Panjon&rightquot;
        <fnt>
          <bib>TAA</bib>
          <lok>&Ccirc;apitro IX.</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_y;&c_ch;&c_n;&c_y;</trd>,
    <trd>&c_s;&c_a;&c_r;&c_d;&c_a;&c_n;&c_ib;&c_ch;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="bg">&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_i;&c_ch;&c_je;&c_n;</trd>
  <trdgrp lng="cs">
    <trd>j&iacute;zliv&yacute;</trd>,
    <trd>sarkastick&yacute;</trd>,
    <trd>s&zcaron;&iacute;rav&yacute;</trd>,
    <trd>u&scaron;t&ecaron;pa&ccaron;n&yacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>sarkastisch</trd>,
    <trd>bei&szlig;end</trd>,
    <trd>bissig <klr>(sarkastisch)</klr></trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>sarcastic</trd>,
    <trd>sardonic</trd>
  </trdgrp>
  <trdgrp lng="fa">
    <trd>&a_T;&a_ayn;&a_n;&a_h;&zwnj;&a_A_madda;&a_m;&f_y;&a_z;</trd>,
    <trd>&f_k;&a_n;&a_A;&f_y;&a_h;&zwnj;&a_A_madda;&a_m;&f_y;&a_z;</trd>,
    <trd>&a_n;&f_y;&a_sh;&a_d;&a_A;&a_r;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>sarcastique</trd>,
    <trd>sardonique</trd>
  </trdgrp>
  <trd lng="it">sarcastico</trd>
  <trdgrp lng="ja">
    <trd>&#36763;&#36771;&#12394;  <pr>&#12375;&#12435;&#12425;&#12388;&#12394;</pr></trd>,
    <trd>&#23244;&#12415;&#12394;  <pr>&#12356;&#12420;&#12415;&#12394;</pr></trd>,
    <trd>&#30382;&#32905;&#12383;&#12387;&#12407;&#12426;&#12398;  <pr>&#12402;&#12395;&#12367;&#12383;&#12387;&#12407;&#12426;&#12398;</pr></trd>
  </trdgrp>
  <trd lng="pl">sarkastyczny</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>,
    <trd>&c_s;&c_a;&c_r;&c_d;&c_o;&c_n;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>sarkastick&yacute;</trd>,
    <trd>u&scaron;tipa&ccaron;n&yacute;</trd>
  </trdgrp>
  <trd lng="uk">&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_i;&c_ch;&c_n;&c_i;&c_j;</trd>
</drv>

<drv mrk="sarkas.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="sarkas.0i.KOMUNE">
    <dif>
      Diri kun <tld/>o, moke,
      ofte <ref tip="vid" cel="antifr.0o">antifraze</ref>:
      <ekz>
        &leftquot;vi meritus katedron en universitato pro tiu profunda penso!&rightquot;, &ndash; &leftquot;&ccirc;esu <tld/>i,
        idioto&rightquot;
        <fnt>
          <bib>ChV</bib>
          <lok>14</lok>
        </fnt>;
      </ekz>
      <ekz>
        elefantojn de &ccirc;iuj formatoj kaj koloroj, milojn da ili &ndash; efektive mi a&ccirc;etis
        dudekon da ili &ccirc;i-matene anta&ubreve; la matenman&gcirc;o! peze <tld/>is Benzo
        <fnt>
          <bib>KrM</bib>
          <lok>33. Plej Bone Ridas Kiu Laste Ridas.</lok>
        </fnt>;
      </ekz>
      <ekz>
        &leftquot;por ricevi honoron sufi&ccirc;as nomi sin amiko de la publiko&rightquot;, &leftquot;vere noble estas&rightquot;,
        li <tld/>is
        <fnt>
          <bib>Rsp</bib>
          <lok>Parto Ok</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_y;&c_ch;&c_n;&c_a; &c_v;&c_y;&c_k;&c_a;&c_z;&c_v;&c_a;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_p;&c_r;&c_a;&c_ja;&c_w;&c_l;&c_ja;&c_c;&c_mol; <ind>&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</ind></trd>
  </trdgrp>
  <trd lng="de">bei&szlig;end <ind>spotten</ind></trd>
  <trdgrp lng="fr">
    <trd>ironiser</trd>,
    <trd>se <ind>moquer</ind></trd>
  </trdgrp>
</drv>
