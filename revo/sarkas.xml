<vortaro>
<art mrk="$Id: sarkas.xml,v 1.28 2023/09/03 12:09:44 revo Exp $">
<kap>
  <ofc>1</ofc>
  <rad>sarkasm</rad>/o <fnt><bib>PV</bib></fnt>
</kap>
<drv mrk="sarkas.0o">
  <kap><tld/>o</kap>
  <uzo tip="stl">POE</uzo>
  <snc mrk="sarkas.0o.KOMUNE">
    <dif>
      Akra kaj mordanta <ref tip="super" cel="mok.0o">moko</ref>.
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</trd>
  <trd lng="bg">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_malmol;&c_m;</trd>
  <trdgrp lng="cs">
    <trd>jedovatost</trd>,
    <trd>j&#xED;zlivost</trd>,
    <trd>sarkazmus</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Sarkasmus</trd>,
    <trd>bei&szlig;ender Spott</trd>
  </trdgrp>
  <trd lng="en">sarcasm</trd>
  <trd lng="es">sarcasmo</trd>
  <trdgrp lng="fa">
    <trd>&a_T;&a_ayn;&a_n;&a_h;</trd>,
    <trd>&a_n;&f_y;&a_sh;</trd>,
    <trd>&f_k;&a_n;&a_A;&f_y;&a_h;</trd>
  </trdgrp>
  <trd lng="fr">sarcasme</trd>
  <trdgrp lng="hu">
    <trd>szarkazmus</trd>,
    <trd>mar&oacute; <ind>g&uacute;ny</ind></trd>
  </trdgrp>
  <trd lng="it">sarcasmo</trd>
  <trdgrp lng="ja">
    <trd>&#x8F9B;&#x8FA3;&#x306A;&#x76AE;&#x8089;  [<ind>&#x3057;&#x3093;&#x3089;&#x3064;&#x306A;&#x3072;&#x306B;&#x304F;</ind>]</trd>,
    <trd>&#x3042;&#x3066;&#x3053;&#x3059;&#x308A;</trd>,
    <trd>&#x5ACC;&#x307F;  [<ind>&#x3044;&#x3084;&#x307F;</ind>]</trd>
  </trdgrp>
  <trd lng="nl">sarcasme</trd>
  <trd lng="pl">sarkazm</trd>
  <trdgrp lng="pt">
   <trd>sarcasmo</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</trd>
  <trdgrp lng="sk">
    <trd>jedovatos&tcaron;</trd>,
    <trd>sarkazmus</trd>
  </trdgrp>
  <trd lng="uk">&c_s;&c_a;&c_r;&#x43A;&c_a;&c_z;&#x43C;</trd>
</drv>

<drv mrk="sarkas.0a">
  <kap><tld/>a</kap>
  <uzo tip="stl">POE</uzo>
  <snc mrk="sarkas.0a.KOMUNE">
    <dif>
      Akre, vunde moka;
      <ref tip="sin" cel="sardon.0a">sardona</ref>:
      <ekz>
        kun <tld/>a rideto sur la lipoj
        <fnt><bib>FK</bib>, <lok>3, anekdotoj</lok></fnt>.
      </ekz>
    </dif>    
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_y;&c_ch;&c_n;&c_y;</trd>,
    <trd>&c_s;&c_a;&c_r;&c_d;&c_a;&c_n;&c_ib;&c_ch;&c_n;&c_y;</trd>
  </trdgrp>
  <trd lng="bg">&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_i;&c_ch;&c_je;&c_n;</trd>
  <trdgrp lng="cs">
    <trd>j&#xED;zliv&#xFD;</trd>,
    <trd>sarkastick&#xFD;</trd>,
    <trd>s&#x17E;&#xED;rav&#xFD;</trd>,
    <trd>u&scaron;t&#x11B;pa&#x10D;n&#xFD;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>sarkastisch</trd>,
    <trd>bei&szlig;end</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>sarcastic</trd>,
    <trd>sardonic</trd>
  </trdgrp>
  <trdgrp lng="fa">
    <trd>&a_T;&a_ayn;&a_n;&a_h;&#x200C;&a_A_madda;&a_m;&f_y;&a_z;</trd>,
    <trd>&f_k;&a_n;&a_A;&f_y;&a_h;&#x200C;&a_A_madda;&a_m;&f_y;&a_z;</trd>,
    <trd>&a_n;&f_y;&a_sh;&a_d;&a_A;&a_r;</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>sarcastique</trd>,
    <trd>sardonique</trd>
  </trdgrp>
  <trd lng="it">sarcastico</trd>
  <trdgrp lng="ja">
    <trd>&#x8F9B;&#x8FA3;&#x306A;  [<ind>&#x3057;&#x3093;&#x3089;&#x3064;&#x306A;</ind>]</trd>,
    <trd>&#x5ACC;&#x307F;&#x306A;  [<ind>&#x3044;&#x3084;&#x307F;&#x306A;</ind>]</trd>,
    <trd>&#x76AE;&#x8089;&#x305F;&#x3063;&#x3077;&#x308A;&#x306E;  [<ind>&#x3072;&#x306B;&#x304F;&#x305F;&#x3063;&#x3077;&#x308A;&#x306E;</ind>]</trd>
  </trdgrp>
  <trd lng="pl">sarkastyczny</trd>
  <trdgrp lng="ru">
    <trd>&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>,
    <trd>&c_s;&c_a;&c_r;&c_d;&c_o;&c_n;&c_i;&c_ch;&c_je;&c_s;&c_k;&c_i;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>sarkastick&#xFD;</trd>,
    <trd>u&scaron;tipa&#x10D;n&#xFD;</trd>
  </trdgrp>
  <trd lng="uk">&c_s;&c_a;&c_r;&#x43A;&c_a;&c_s;&c_t;&c_i;&c_ch;&#x43D;&c_i;&c_j;</trd>
</drv>

<drv mrk="sarkas.0i">
  <kap><tld/>i</kap>
  <gra><vspec>ntr</vspec></gra>
  <snc mrk="sarkas.0i.KOMUNE">
    <dif>
      Diri kun <tld/>o, moke,
      ofte <ref tip="vid" cel="antifr.0o">antifraze</ref>:
      <ekz>
        &ccirc;esu <tld/>i, idioto
        <fnt>
          <aut>C. Piron</aut>,
          <vrk><url ref="http://www.esperanto.org.uk/eldonoj/piron/tekstoj/Cxu_li_venis_trakosme.html">
          &Ccirc;u li venis trakosme?</url></vrk>,
          <lok>1980</lok>
        </fnt>
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_s;&c_a;&c_r;&c_k;&c_a;&c_s;&c_t;&c_y;&c_ch;&c_n;&c_a; &c_v;&c_y;&c_k;&c_a;&c_z;&c_v;&c_a;&c_c;&c_c;&c_a;</trd>,
    <trd>&c_p;&c_r;&c_a;&c_ja;&c_w;&c_l;&c_ja;&c_c;&c_mol; <ind>&c_s;&c_a;&c_r;&c_k;&c_a;&c_z;&c_m;</ind></trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>ironiser</trd>,
    <trd>se <ind>moquer</ind></trd>
  </trdgrp>
</drv>
</art>
