<drv mrk="mensog.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <snc mrk="mensog.0i.KOMUNE">
    <gra><vspec>x</vspec></gra>
    <dif>
      Intence diri malvera&jcirc;on:
      <ekz>
        ne <tld/>u, kaj ne trompu unu alian
        <fnt>
          <bib>MT</bib>
          <lok>Levidoj 19:11</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;i sciis, ke la spegulo neniam <tld/>as
        <fnt>
          <bib>ElektFab</bib>
          <lok>Ne&gcirc;ulino</lok>
        </fnt>;
      </ekz>
      <ekz>
        li <tld/>is, kiam li diris, ke mi estas juna kaj sana
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        mi <tld/>is, kion ajn mi diris
        <fnt>
          <bib>Rabistoj</bib>
          <lok>Akto Kvina</lok>
        </fnt>;
      </ekz>
      <ekz>
        li ne certe sciis, &ccirc;u li <tld/>as, a&ubreve; diras la veron
        <fnt>
          <bib>HsT</bib>
          <lok>Kuni&gcirc;o</lok>
        </fnt>;
      </ekz>
      <ekz>
        <nom>Boris</nom>, mia an&gcirc;elo, mi ne povas <tld/>i,
        kiam mi vidas vian viza&gcirc;on
        <fnt>
          <bib>IKr</bib>
          <lok>PATRO</lok>
        </fnt>;
      </ekz>
      <ekz>
        falsi deklarojn, trompi havenajn instancojn, <tld/>i kursojn <klr>[&#8230;]</klr>
        kompare kun ili tradicia marrabisto estas ja nobelo
        <fnt>
          <bib>Mortul&Scirc;ip</bib>
          <lok>&Ccirc;apitro 26</lok>
        </fnt>;
      </ekz>
      <ekz>
        ni povas <tld/>i ion al la homoj, mi rakontos pli multe survoje
        <fnt>
          <bib>VRA</bib>
          <lok>Moa Martinson</lok>
        </fnt>;
      </ekz>
      <ekz>
        <ind>li <tld/>as ma&scirc;ine</ind>
        <fnt>
          <bib>PrV</bib>
        </fnt>;
        <trd lng="de">er <ind>l&uuml;gt</ind> wiegedruckt</trd>
      </ekz>
      <ekz>
        <tld/>as kiel kalendaro, kiel gazeto, kiel funebra parolo
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        por glate <tld/>i, oni spriton bezonas
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        kiu volas <tld/>i, devas bone memori
        <fnt>
          <bib>PrV</bib>
        </fnt>;
      </ekz>
      <ekz>
        espero logas, espero <tld/>as
        <fnt>
          <bib>PrV</bib>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
