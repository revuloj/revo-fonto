  <fnt><bib>PIV1</bib></fnt>
  <snc>
    <dif>
      Aro da pluraj <ref cel="ekvaci.0o"><tld/>oj</ref> samtempe 
      solvendaj:
      <ekz>
        lineara <tld/>aro kun du nekonatoj;
      </ekz>
      <ekz>
        sensolva <tld/>aro.
      </ekz>
    </dif>
    <ref tip="sin" cel="sistem.0o.ekvacioj">sistemo.</ref>
  </snc>
  <trd lng="be">&c_s;&c_y;&c_s;&c_t;&c_e;&c_m;&c_a;
  <ind>&c_r;&c_a;&c_w;&c_n;&c_a;&c_n;&c_mol;&c_n;&c_ja;&c_w;</ind></trd>
  <trd lng="cs">soustava rovnic</trd>
  <trd lng="de">Gleichungssystem</trd>
  <trd lng="en">system of equations</trd>
  <trd lng="es">sistema de <ind>ecuaciones</ind></trd>
  <trd lng="fr">syst&egrave;me d'&eacute;quations</trd>
  <trd lng="he">&#x5DE;&#x5E2;&#x5E8;&#x5DB;&#x5EA;
  &#x5DE;&#x5E9;&#x5D5;&#x5D5;&#x5D0;&#x5D5;&#x5EA;</trd>
  <trd lng="hu">egyenletrendszer</trd>
  <trd lng="ja">&#x9023;&#x7ACB;&#x65B9;&#x7A0B;&#x5F0F;  <pr>&#x308C;&#x3093;&#x308A;&#x3064;&#x307B;&#x3046;&#x3066;&#x3044;&#x3057;&#x304D;</pr></trd>
