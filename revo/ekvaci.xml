<drv mrk="ekvaci.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">MAT</uzo>
  <fnt><bib>MatTerm</bib><lok>p. 15</lok></fnt>
  <snc>
    <dif>
      Matematika problemo, konsistanta en ser&ccirc;ado de
      <ref cel="bild.inversa0o.elemento">inversa bildo</ref> de iu
      elemento 
      <frm am="a"><k>a</k></frm> per iu <ref cel="bild.0igo.MAT">bildigo</ref>;      
      <tld/>o ofte prezenti&gcirc;as sub formo de egala&jcirc;o 
      <frm am="f(x)=a"><k>f</k>(<k>x</k>) = <k>a</k></frm>,
      kie <frm am="x"><k>x</k></frm> estas
      la ser&ccirc;ata <ref cel="kon.ne0ato.ekvacio">nekonato</ref>
      (plej ofte: nombro, punkto, vektoro a&ubreve; bildigo):
      <ekz>
        solvi <tld/>on;
      </ekz>
      <ekz>
        la <tld/>o <frm am="x^2+1=0"><k>x</k><sup>2</sup>+1 = 0</frm> ne akceptas 
        <klr>(ne havas) </klr> <ref cel="reel.0a">reelan</ref> solvon;
      </ekz>
      <ekz>
        la nombro <frm>1</frm><klr> </klr><ref cel="ver.0igi.MAT">verigas</ref> la 
        <tld/>on <frm am="x^2-1=0"><k>x</k><sup>2</sup>-1 = 0</frm>;
      </ekz>
      <ekz>
        la funkcio <ref cel="sinus.0o">sinuso</ref> verigas la <tld/>on
        <frm am="x&second;+x=0"><k>x</k>&second;+<k>x</k> = 0</frm>;
      </ekz>
      <ekz>
        kartezia, polusa <tld/>o de <ref cel="kurb.0o.MAT">kurbo</ref>,
        <ref cel="surfac.0o.MAT">surfaco</ref> <klr>(la <tld/>o, kiun
        verigas la koordinatoj de ties punktoj)</klr>;
      </ekz>
      <ekz>
        algebra <tld/>o <klr>(kies solvo estas &ccirc;iu inversa bildo
        de <frm>0</frm> per 
        <ref cel="funkci.polinoma0o">polinoma funkcio</ref>)</klr>,
      </ekz>
      <ekz>
        transcenda <tld/>o <klr>(ne estanta algebra)</klr>;
      </ekz>
      <ekz>
        lineara <tld/>o <klr>(en kiu <frm am="f"><k>f</k></frm> estas 
        <ref cel="linear.0a.homomorfio">lineara</ref> funkcio)</klr>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="be">
    <trd>&c_r;&c_a;&c_w;&c_n;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
    <trd>&c_u;&c_r;&c_a;&c_w;&c_n;&c_je;&c_n;&c_mol;&c_n;&c_je;</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>rovnice</trd>,
    <trd>rovnost</trd>
  </trdgrp>
  <trd lng="de">Gleichung</trd>
  <trd lng="en">equation</trd>
  <trd lng="es">ecuaci&oacute;n</trd>
  <trd lng="fr">&eacute;quation</trd>
  <trd lng="hu">egyenlet</trd>
  <trd lng="ja">&#x65B9;&#x7A0B;&#x5F0F;  <pr>&#x307B;&#x3046;&#x3066;&#x3044;&#x3057;&#x304D;</pr></trd>
  <trd lng="pl">r&oacute;wnanie</trd>
  <trd lng="pt">equa&ccedil;&atilde;o</trd>
  <trd lng="ru">&c_u;&c_r;&c_a;&c_v;&c_n;&c_je;&c_n;&c_i;&c_je;</trd>
  <trd lng="sk">rovnica</trd>
  <trd lng="uk">&#x440;&#x456;&#x432;&#x43D;&#x44F;&#x43D;&#x43D;&#x44F;</trd>
  <trdgrp lng="zh">
    <trd>&#x6046;&#x7B49;&#x5F0F; <pr>h&#xE9;ngd&#x11B;ngsh&#xEC;</pr></trd>,
    <trd>&#x65B9;&#x7A0B;&#x5F0F; <pr>f&#x101;ngch&#xE9;ngsh&#xEC;</pr></trd>
  </trdgrp>
</drv>

