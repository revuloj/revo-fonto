<vortaro>
<art mrk="$Id: kandel1.xml,v 1.26 2024/03/11 09:24:32 revo Exp $">
<kap>
  <ofc>3</ofc>
  <rad>kandelabr</rad>/o
</kap>
<drv mrk="kandel1.0o">
  <kap><tld/>o</kap>
  <snc>
    <dif>
      Luksa plurbran&ccirc;a <ref tip="super" cel="kandel.0ingo">kandelingo</ref>:
      <ekz>
        faru <tld/>on el pura oro per for&gcirc;a laboro
        <fnt>
          <bib>MT</bib>
          <lok>Eliro 25:31</lok>
        </fnt>;
      </ekz>
      <ekz>
        sur bronzaj postamentoj orbrilantaj <tld/>oj etendis siajn
        bran&ccirc;formajn brakojn
        <fnt><bib>Marta</bib></fnt>;
      </ekz>
      <ekz>
        la ar&gcirc;enta sabata <tld/>o ver&scirc;is sian festan lumon sur la piece gajajn viza&gcirc;ojn
        <fnt>
          <bib>RBa</bib>
          <lok>&Ccirc;APITRO I</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <snc mrk="kandel1.0o.lampingo">
    <dif>
      Simile aran&gcirc;ita <ref tip="super" cel="lamp.0ingo">lampingo</ref>:
      <ekz>
        la kapelo estis senfenestra kaj nur duone lumigita per kvarlampa <tld/>o,
        staranta en la mezo
        <fnt>
          <bib>I&scirc;tar</bib>
          <lok>&Ccirc;apitro XI</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;i volis, se ne estingi la lumojn, almena&ubreve; malpligrandigi ilian blindigan
        krudecon: alproksimi&gcirc;ante al la unua <tld/>o, &scirc;i penis turni &gcirc;iajn kranojn
        <fnt>
          <bib>KPr</bib>
          <lok>&Ccirc;apitro Deksesa</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="lustr.0o">lustro</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_n;&c_d;&c_e;&c_l;&c_ja;&c_b;&c_r;</trd>
  <trdgrp lng="bg">
    <trd>&c_k;&c_a;&c_n;&c_d;&c_je;&c_l;&c_a;&c_b;&c_r;&c_a;</trd>,
    <trd>&c_p;&c_o;&c_l;&c_i;&c_l;&c_je;&c_j;</trd>
  </trdgrp>
  <trd lng="ca">canelobre</trd>
  <trdgrp lng="cs">
    <trd>kandel&aacute;br</trd>,
    <trd>v&iacute;ceramenn&yacute; sv&iacute;cen</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>Armleuchter</trd>,
    <trd>Kandelaber</trd>,
    <trd>Girandole</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>candelabrum</trd>,
    <trd>candelabra</trd>
  </trdgrp>
  <trd lng="es">candelabro</trd>
  <trd lng="fa">&a_sh;&a_m;&a_ayn;&a_d;&a_A;&a_n;
  <klr tip="amb">(&f_ch;&a_n;&a_d;&a_sh;&a_A;&a_kh;&a_h;)</klr></trd>
  <trd lng="fr">cand&eacute;labre</trd>
  <trdgrp lng="hu">
    <trd>kandel&aacute;ber</trd>,
    <trd>karos <ind>gyertyatart&oacute;</ind></trd>
  </trdgrp>
  <trd lng="ja">&#x679D;&#x4ED8;&#x304D;&#x71ED;&#x53F0;  <pr>&#12360;&#12384;&#12388;&#x304D;&#12375;&#12423;&#x304F;&#12384;&#12356;</pr></trd>
  <trdgrp lng="nl">
    <trd>kandelaber</trd>,
    <trd>armkandelaar</trd>,
    <trd>kroonluchter</trd>
  </trdgrp>
  <trd lng="pl">kandelabr</trd>
  <trd lng="ru">&c_k;&c_a;&c_n;&c_d;&c_je;&c_l;&c_ja;&c_b;&c_r;</trd>
  <trd lng="sk">svietnik <klr>(viacramenn&yacute; prepychov&yacute;)</klr></trd>
  <trd lng="uk">&c_k;&c_a;&c_n;&c_d;&c_je;&c_l;&c_ja;&c_b;&c_r;</trd>
  <trd lng="zh">&#x70DB;&#x67B6; <pr>zh&#xFA;ji&#xE0;</pr></trd>
</drv>

<drv mrk="kandel1.sepbraka_0o">
  <kap>
    sepbraka <tld/>o
  </kap>
  <snc mrk="kandel1.sepbraka_0o.REL">
    <uzo tip="fak">REL</uzo>
    <dif>
      <ref tip="super" cel="kandel.0ingo">Kandelingo</ref> kun po tri brakoj amba&ubreve;flanke,
      tiel ke &gcirc;i portas entute sep kandelojn; grava simbolo de judismo:
      <ekz>
        &ccirc;irka&ubreve;kradita estrado, sur kies balustrado staris diversaj sanktaj objektoj,
        interalie la sepbraka templa <tld/>o
        <fnt>
          <bib>RBa</bib>
          <lok>&Ccirc;apitro II</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_s;&c_ja;&c_m;&c_ib;&c_s;&c_mol;&c_v;&c_je;&c_ch;&c_n;&c_ib;&c_k;</trd>
  <trdgrp lng="de">
    <trd>siebenarmiger <ind>Leuchter</ind></trd>,
    <trd>Menora</trd>
  </trdgrp>
  <trd lng="en">menorah</trd>
  <trd lng="fr">menorah</trd>
  <trd lng="he">&mem;&#x5B0;&nun;&vav;&#x5B9;&resh;&#x5B8;&he;</trd>
</drv>

</art>
