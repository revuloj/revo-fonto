    <trd>v&aacute;&zcaron;n&yacute;</trd>
  </trdgrp>
  <trd lng="en">serious</trd>
  <trd lng="es">serio</trd>
  <trd lng="fr">s&eacute;rieux</trd>
  <trd lng="hu">komoly</trd>
  <trdgrp lng="id">
    <trd>serius</trd>,
    <trd>sungguh-sungguh</trd>,
    <trd><ind>tidak</ind> bercanda</trd>,
