    <trd>&#x8B39;&#x53B3;&#x306A; <pr>&#x304D;&#x3093;&#x3052;&#x3093;&#x306A;</pr></trd>,
    <trd>&#x672C;&#x6C17;&#x306E; <pr>&#x307B;&#x3093;&#x304D;&#x306E;</pr></trd>,
    <trd>&#x771F;&#x5263;&#x306A; <pr>&#x3057;&#x3093;&#x3051;&#x3093;&#x306A;</pr></trd>,
    <trd>&#x91CD;&#x5927;&#x306A; <pr>&#x3058;&#x3085;&#x3046;&#x3060;&#x3044;&#x306A;</pr></trd>,
    <trd>&#x6DF1;&#x523B;&#x306A; <pr>&#x3057;&#x3093;&#x3053;&#x304F;&#x306A;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>ernstig</trd>,
    <trd>serieus</trd>
  </trdgrp>
  <trd lng="pl">powa&zdot;ny</trd>
  <trdgrp lng="pt">
    <trd>s&eacute;rio</trd>,
    <trd>sisudo</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_je;&c_r;&c_mol;&c_jo;&c_z;&c_n;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>rozv&aacute;&zcaron;ny</trd>,
    <trd>seri&oacute;zny</trd>
  </trdgrp>
  <trd lng="sv">seri&ouml;s</trd>
  <trdgrp lng="uk">
    <trd>&c_s;&c_je;&c_r;&c_j;&c_o;&c_z;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_p;&c_o;&c_v;&c_a;&c_zh;&c_n;&c_i;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#x90D1;&#x91CD; <pr>zh&egrave;ngzh&ograve;ng</pr></trd>,
    <trd>&#x912D;&#x91CD; <pr>zh&egrave;ngzh&ograve;ng</pr></trd>,
    <trd>&#x4E25;&#x8083; <pr>y&aacute;ns&ugrave;</pr></trd>,
    <trd>&#x56B4;&#x8085; <pr>y&aacute;ns&ugrave;</pr></trd>,
    <trd>&#x8A8D;&#x771F; <pr>r&egrave;nzh&emacron;n</pr></trd>,
    <trd>&#x8BA4;&#x771F; <pr>r&egrave;nzh&emacron;n</pr></trd>,
    <trd>&#x4E25;&#x91CD; <pr>y&aacute;nzh&ograve;ng</pr></trd>,
    <trd>&#x56B4;&#x91CD; <pr>y&aacute;nzh&ograve;ng</pr></trd>,
    <trd>&#x51B7;&#x9762; <pr>l&ecaron;ngmi&agrave;n</pr></trd>,
    <trd>&#x90D1;&#x91CD;&#x5176;&#x4E8B; <pr>zh&egrave;ngzh&ograve;ngq&iacute;sh&igrave;</pr></trd>,
    <trd>&#x912D;&#x91CD;&#x5176;&#x4E8B; <pr>zh&egrave;ngzh&ograve;ngq&iacute;sh&igrave;</pr></trd>,
    <trd>&#x4E00;&#x672C;&#x6B63;&#x7D93; <pr>y&imacron;b&ecaron;nzh&egrave;ngj&imacron;ng</pr></trd>,
    <trd>&#x4E00;&#x672C;&#x6B63;&#x7ECF; <pr>y&imacron;b&ecaron;nzh&egrave;ngj&imacron;ng</pr></trd>
