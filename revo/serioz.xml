<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>serioz</rad>/a
</kap>
<drv mrk="serioz.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc>
    <dif>
      Nerida, ne&scirc;erca:
    </dif>
    <subsnc>
      <uzo tip="klr">(iu)</uzo>
      <dif>
        Ne&scirc;ercema, nekaprica kaj nefantazia:
        <ekz>
          <tld/>a kaj e&ccirc; severa homo.
        </ekz>
      </dif>
    </subsnc>
    <subsnc>
      <uzo tip="klr">(iu)</uzo>
      <dif>
        Nefrivola, nedistri&gcirc;ema, diligente kaj zorge atenta:
        <ekz>
          <tld/>a a&ubreve;toritata homo<fnt>Z</fnt>
        </ekz>
      </dif>
      <refgrp tip="sin">
        <ref cel="solid.0a.serioza">solida <sncref/></ref>
      </refgrp>
    </subsnc>
    <subsnc>
      <uzo tip="klr">(io)</uzo>
      <dif>
        Nebagatela, grava, multsignifa:
        <ekz>
          <tld/>a situacio, demando, ribelo;
        </ekz>
        <ekz>
          nia literaturo bezonas <tld/>ajn, instruajn kaj utilajn verkojn.
        </ekz>
      </dif>
    </subsnc>
  </snc>
  <trd lng="be">&c_s;&c_u;&c_r;'&c_jo;&c_z;&c_n;&c_y;</trd>
  <trd lng="cs">v&aacute;&zcaron;n&yacute;</trd>
  <trdgrp lng="de">
    <trd>ernsthaft</trd>,
    <trd>seri&ouml;s</trd>
  </trdgrp>
  <trd lng="en">serious</trd>
  <trd lng="es">serio</trd>
  <trd lng="fr">s&eacute;rieux</trd>
  <trd lng="hu">komoly</trd>
  <trdgrp lng="nl">
    <trd>ernstig</trd>,
    <trd>serieus</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>s&eacute;rio</trd>,
    <trd>sisudo</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_je;&c_r;&c_mol;&c_jo;&c_z;&c_n;&c_y;&c_j;</trd>
  <trd lng="sv">seri&ouml;s</trd>
</drv>

<drv mrk="serioz.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc mrk="serioz.0igxi.KOMUNE">
    <dif>
      I&gcirc;i <tld/>a:
      <ekz>
        &scirc;i foje <tld/>i&gcirc;is, tre <tld/>i&gcirc;is, iom sulkante
        la frunton
        <fnt>
        <aut>Machado de Assis, trad. Paulo Viana</aut>,
        <vrk>La divenistino kaj aliaj rakontoj</vrk>,
        <lok>Oportuno, jaro 2005a, p. 33a</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>se <ind>rembrunir</ind></trd>,
    <trd>devenir s&eacute;rieux</trd>
  </trdgrp>
</drv>

<drv mrk="serioz.mal0a">
  <kap>mal<tld/>a</kap>
  <snc mrk="serioz.mal0a.KOMUNE">
    <dif>
      Frivola, &scirc;ercema, nefidinda:
      <ekz>
        jes estas Tom, la plej mal<tld/>a knabo en la tuta universitato
        <fnt><bib>Gerda</bib>, <lok>&ccirc;apitro 1a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trdgrp lng="fr">
    <trd>frivole</trd>,
    <trd>l&eacute;ger<klr tip="amb"> (insouciant)</klr></trd>,
    <trd>superficiel<klr tip="amb"> (insouciant)</klr></trd>
  </trdgrp>
</drv>
</art>
