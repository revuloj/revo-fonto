    <trd>&#26412;&#27671;&#12398; <pr>&#12411;&#12435;&#12365;&#12398;</pr></trd>,
    <trd>&#30495;&#21091;&#12394; <pr>&#12375;&#12435;&#12369;&#12435;&#12394;</pr></trd>,
    <trd>&#37325;&#22823;&#12394; <pr>&#12376;&#12421;&#12358;&#12384;&#12356;&#12394;</pr></trd>,
    <trd>&#28145;&#21051;&#12394; <pr>&#12375;&#12435;&#12371;&#12367;&#12394;</pr></trd>
  </trdgrp>
  <trdgrp lng="nl">
    <trd>ernstig</trd>,
    <trd>serieus</trd>
  </trdgrp>
  <trd lng="pl">powa&zdot;ny</trd>
  <trdgrp lng="pt">
    <trd>s&eacute;rio</trd>,
    <trd>sisudo</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_je;&c_r;&c_mol;&c_jo;&c_z;&c_n;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>rozv&aacute;&zcaron;ny</trd>,
    <trd>seri&oacute;zny</trd>
  </trdgrp>
  <trd lng="sv">seri&ouml;s</trd>
  <trdgrp lng="uk">
    <trd>&c_s;&c_je;&c_r;&c_j;&c_o;&c_z;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_p;&c_o;&c_v;&c_a;&c_zh;&c_n;&c_i;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#37073;&#37325; <pr>zh&egrave;ngzh&ograve;ng</pr></trd>,
    <trd>&#37165;&#37325; <pr>zh&egrave;ngzh&ograve;ng</pr></trd>,
    <trd>&#20005;&#32899; <pr>y&aacute;ns&ugrave;</pr></trd>,
