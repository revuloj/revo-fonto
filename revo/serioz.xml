    <trd>&#35469;&#30495; <pr>r&egrave;nzh&emacron;n</pr></trd>,
    <trd>&#35748;&#30495; <pr>r&egrave;nzh&emacron;n</pr></trd>,
    <trd>&#20005;&#37325; <pr>y&aacute;nzh&ograve;ng</pr></trd>,
    <trd>&#22196;&#37325; <pr>y&aacute;nzh&ograve;ng</pr></trd>,
    <trd>&#20919;&#38754; <pr>l&ecaron;ngmi&agrave;n</pr></trd>,
    <trd>&#37073;&#37325;&#20854;&#20107; <pr>zh&egrave;ngzh&ograve;ngq&iacute;sh&igrave;</pr></trd>,
    <trd>&#37165;&#37325;&#20854;&#20107; <pr>zh&egrave;ngzh&ograve;ngq&iacute;sh&igrave;</pr></trd>,
    <trd>&#19968;&#26412;&#27491;&#32147; <pr>y&imacron;b&ecaron;nzh&egrave;ngj&imacron;ng</pr></trd>,
    <trd>&#19968;&#26412;&#27491;&#32463; <pr>y&imacron;b&ecaron;nzh&egrave;ngj&imacron;ng</pr></trd>
  </trdgrp>
</drv>

<drv mrk="serioz.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc mrk="serioz.0igxi.KOMUNE">
    <dif>
      I&gcirc;i <tld/>a:
      <ekz>
        subite &scirc;i <tld/>i&gcirc;is, metis la manojn sur liajn &scirc;ultrojn kaj rigardis en liajn
        okulojn
        <fnt>
          <bib>HsT</bib>
          <lok>Kuni&gcirc;o</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;i foje <tld/>i&gcirc;is, tre <tld/>i&gcirc;is, iom sulkante
        la frunton
        <fnt>
          <aut>Machado de Assis, trad. Paulo Viana</aut>,
          <vrk>La divenistino kaj aliaj rakontoj</vrk>,
          <lok>Oportuno, jaro 2005a, p. 33a</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[tion]</klr> amikmoke komentis la nevo, sed tuj li <tld/>i&gcirc;is
        <fnt>
          <bib>ChV</bib>
          <lok>14</lok>
        </fnt>;
      </ekz>
      <ekz>
        sub la direkto de <nom>Drezen</nom>, balda&ubreve; <tld/>i&gcirc;is la poresperanta agado en Soveta Unio
        <fnt>
          <bib>EeP</bib>
          <lok>Kvara Parto</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_s;&c_u;&c_r;&#8217;&c_jo;&c_z;&c_mol;&c_n;&c_je;&c_c;&c_mol;</trd>
  <trd lng="ca">enseriosir-se</trd>
  <trd lng="de"><ind>ernst</ind> werden</trd>
  <trdgrp lng="fr">
    <trd>se <ind>rembrunir</ind></trd>,
    <trd>devenir s&eacute;rieux</trd>
  </trdgrp>
  <trdgrp lng="id">
    <trd><baz>serius</baz>berserius</trd>,
    <trd><baz>sungguh-sungguh</baz>bersungguh-sungguh</trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>spowa&zdot;nie&cacute;</trd>,
    <trd>statkowa&cacute;</trd>
  </trdgrp>
</drv>

<drv mrk="serioz.mal0a">
  <kap>mal<tld/>a</kap>
  <snc mrk="serioz.mal0a.KOMUNE">
    <dif>
      <ref cel="frivol.0a">Frivola</ref>, <ref cel="sxerc.0ema">&scirc;ercema</ref>, <ref cel="fid.ne0inda">nefidinda</ref>:
      <ekz>
        malgra&ubreve; la mal<tld/>a &scirc;ajno, li havis noblan kaj energian karakteron
        <fnt>
          <bib>Far3</bib>
          <lok>&Ccirc;apitro XII</lok>
        </fnt>;
      </ekz>
      <ekz>
        liaj movi&gcirc;emaj okuloj estis nun plenaj de mal&gcirc;ojo, la bu&scirc;o, sur kiu oni ordinare
        &ccirc;iam vidis mal<tld/>an rideton, havis nun esprimon bonkoran
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        jes estas <nom>Tom</nom>, la plej mal<tld/>a knabo en la tuta universitato
        <fnt><bib>Gerda</bib>, <lok>&ccirc;apitro 1a</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="anim.facil0a">facilanima</ref>,
      <ref cel="gaj.0a">gaja</ref>,
      <ref cel="petol.0ema">petolema</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_n;&c_je;&c_s;&c_u;&c_r;&#8217;&c_jo;&c_z;&c_n;&c_y;</trd>
  <trdgrp lng="ca">
    <trd>lleuger</trd>,
    <trd>despreocupat</trd>,
    <trd>negligent</trd>,
    <trd>fluix</trd>,
    <trd>lax</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>frivoln&iacute;</trd>,
    <trd>le&zcaron;&eacute;rn&iacute;</trd>,
    <trd>nedbal&yacute;</trd>,
    <trd>nev&aacute;&zcaron;n&yacute;</trd>,
    <trd>povrchn&iacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>leichtfertig</trd>,
    <trd>unernst</trd>,
    <trd>scherzhaft</trd>,
    <trd>spa&szlig;ig</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>frivole</trd>,
    <trd>l&eacute;ger<klr tip="amb"> (insouciant)</klr></trd>,
    <trd>superficiel<klr tip="amb"> (insouciant)</klr></trd>
  </trdgrp>
  <trdgrp lng="id">
    <trd><baz>canda</baz>bercanda</trd>,
    <trd>main-main</trd>,
    <trd><ind>tidak</ind> serius</trd>,
    <trd><ind>tidak</ind> sungguh-sungguh</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#19981;&#12414;&#12376;&#12417;&#12394;  <pr>&#12405;&#12414;&#12376;&#12417;&#12394;</pr></trd>,
    <trd>&#36605;&#34180;&#12394;  <pr>&#12369;&#12356;&#12399;&#12367;&#12394;</pr></trd>
  </trdgrp>
  <trdgrp lng="pl">
    <trd>niepowa&zdot;ny</trd>,
    <trd>lekkomy&sacute;lny</trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>frivoln&yacute;</trd>,
    <trd>neseri&oacute;zny</trd>,
    <trd>nev&aacute;&zcaron;ny</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_n;&c_je;&c_s;&c_je;&c_r;&c_j;&c_o;&c_z;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_l;&c_je;&c_g;&c_k;&c_i;&c_j;</trd>,
    <trd>&c_r;&c_o;&c_z;&c_v;&c_a;&c_zh;&c_a;&c_l;&c_mol;&c_n;&c_i;&c_j;</trd>,
    <trd>&c_zh;&c_a;&c_r;&c_t;&c_ib;&c_v;&c_l;&c_i;&c_v;&c_i;&c_j;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#36629;&#28014; <pr>q&imacron;ngf&uacute;</pr></trd>,
    <trd>&#36731;&#28014; <pr>q&imacron;ngf&uacute;</pr></trd>,
