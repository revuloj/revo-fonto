  <rad>serioz</rad>/a
</kap>
<drv mrk="serioz.0a">
  <kap><ofc>*</ofc><tld/>a</kap>
  <snc>
    <dif>
      Nerida, ne&scirc;erca:
    </dif>
    <subsnc>
      <uzo tip="klr">(iu)</uzo>
      <dif>
        Ne<ref tip="ant" cel="sxerc.0ema">&scirc;ercema</ref>, ne<ref tip="ant" cel="kapric.0a">kaprica</ref> 
        kaj nefantazia:
        <ekz>
          Jadvinjo <klr>[&#x2026;]</klr> kun <tld/>a mieno al&scirc;ovis al la tablo oportunan
          brakse&gcirc;on kaj metis anta&ubreve; &gcirc;i kelke da libroj
          <fnt>
            <bib>Marta</bib>
          </fnt>;
        </ekz>
        <ekz>
          videble devigante sin esti <tld/>a, tamen ne povante tute ka&scirc;i rideton
          <fnt>
            <bib>Marta</bib>
          </fnt>.
        </ekz>
      </dif>
      <trd lng="de">ernst</trd>
    </subsnc>
    <subsnc>
      <uzo tip="klr">(iu)</uzo>
      <dif>
        Ne<ref tip="ant" cel="frivol.0a.iu">frivola</ref>, 
        nedistri&gcirc;ema, diligente kaj zorge atenta:
        <ekz>
          diakonoj devas esti <tld/>aj, ne duflanke parolantaj, ne tro amantaj vinon
          <fnt>
            <bib>NT</bib>
            <lok>I. Timoteo 3:8</lok>
          </fnt>;
        </ekz>
        <ekz>
          simpla infana&jcirc;o, kiun <tld/>aj homoj certe ne permesus al si
          <fnt>
            <bib>Paroloj</bib>
            <vrk>Parolado anta&ubreve; la Sesa Kongreso Esperantista en Washington en la 15a de a&ubreve;gusto 1910</vrk>
          </fnt>;
        </ekz>
        <ekz>
          simpla logiko kaj prudento, kontra&ubreve; kiu certe nenia <tld/>a komitato volos peki
          <fnt>
            <bib>Paroloj</bib>
            <vrk>Parolado anta&ubreve; la Sesa Kongreso Esperantista en Washington en la 15a de a&ubreve;gusto 1910</vrk>
          </fnt>;
        </ekz>
        <ekz>
          <klr>[kuntiri]</klr> la brovojn en <tld/>a meditado super komplikitaj punktoj de
          le&gcirc;oj
          <fnt>
            <bib>BdV</bib>
            <lok>La Batalo de l' Vivo</lok>
          </fnt>;
        </ekz>
        <ekz>
          li ankora&ubreve; neniam en sia vivo estis <tld/>a
          <fnt>
            <bib>BdV</bib>
            <lok>La Batalo de l' Vivo</lok>
          </fnt>.
        </ekz>
      </dif>
      <refgrp tip="sin">
        <ref cel="solid.0a.serioza">solida <sncref/></ref>
      </refgrp>
      <refgrp tip="vid">
        <ref cel="asidu.0a">asidua</ref>,
        <ref cel="discip.0a">disciplina</ref>,
<ref cel="lojal.0a">lojala</ref>
      </refgrp>
    <trdgrp lng="de">
      <trd>ernsthaft</trd>,
      <trd>seri&ouml;s</trd>
    </trdgrp>
    </subsnc>
    <subsnc>
      <uzo tip="klr">(io)</uzo>
      <dif>
        Ne<ref tip="ant" cel="bagate.0a">bagatela</ref>, <ref tip="sin" cel="grav.0a">grava</ref>, 
        mult<ref cel="signif.0a.FIG">signifa</ref>:
        <ekz>
          tre <tld/>a atako
          <fnt>
            <bib>FK</bib>
            <lok>Fundamenta Krestomatio de la lingvo Esperanto</lok>
          </fnt>;
        </ekz>
        <ekz>
          ni venis pro <tld/>a afero
          <fnt>
            <bib>Revizoro</bib>
            <lok>Akto kvara</lok>
          </fnt>;
        </ekz>
        <ekz>
          en la tono de &scirc;ia vo&ccirc;o oni povis rimarki <klr>[&#x2026;]</klr> <tld/>an korecon
          <fnt>
            <bib>BdV</bib>
            <lok>La Batalo de l' Vivo</lok>
          </fnt>;
        </ekz>
        <ekz>
          por edzi&gcirc;o la plena manko de religio povas esti <tld/>a malhelpo
          <fnt>
            <bib>ChL</bib>
            <lok>&Ccirc;apitro Tria</lok>
          </fnt>;
        </ekz>
        <ekz>
          li ne scias <klr>[&#x2026;]</klr> &ccirc;u la duelo estas &scirc;erca a&ubreve; <tld/>a
          <fnt>
            <bib>DKM</bib>
            <lok>&Ccirc;apitro LXIV</lok>
          </fnt>.
        </ekz>
      </dif>
      <refgrp tip="vid">
        <ref cel="sever.0a">severa</ref>
      </refgrp>
      <trdgrp lng="de">
        <trd>ernst <klr>(Angelegenheit)</klr></trd>,
        <trd>gravierend</trd>
      </trdgrp>
    </subsnc>
  </snc>
  <trd lng="be">&c_s;&c_u;&c_r;'&c_jo;&c_z;&c_n;&c_y;</trd>
  <trd lng="bo">&t_tsha;&t_ba;&t_sa;&t_tsheg;&t_cha;&t_drengbu;&t_tsheg;</trd>
  <trd lng="ca">seri&oacute;s</trd>
  <trdgrp lng="cs">
    <trd>seri&oacute;zn&iacute;</trd>,
    <trd>v&aacute;&zcaron;n&yacute;</trd>
  </trdgrp>
  
  <trd lng="en">serious</trd>
  <trd lng="es">serio</trd>
  <trd lng="fr">s&eacute;rieux</trd>
  <trd lng="hu">komoly</trd>
  <trdgrp lng="nl">
    <trd>ernstig</trd>,
    <trd>serieus</trd>
  </trdgrp>
  <trdgrp lng="pt">
    <trd>s&eacute;rio</trd>,
    <trd>sisudo</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_je;&c_r;&c_mol;&c_jo;&c_z;&c_n;&c_y;&c_j;</trd>
  <trdgrp lng="sk">
    <trd>rozv&aacute;&zcaron;ny</trd>,
    <trd>seri&oacute;zny</trd>
  </trdgrp>
  <trd lng="sv">seri&ouml;s</trd>
  <trdgrp lng="uk">
    <trd>&#x441;&#x435;&#x440;&#x439;&#x43E;&#x437;&#x43D;&#x438;&#x439;</trd>,
    <trd>&#x43F;&#x43E;&#x432;&#x430;&#x436;&#x43D;&#x438;&#x439;</trd>
  </trdgrp>
</drv>

<drv mrk="serioz.0igxi">
  <kap><tld/>i&gcirc;i</kap>
  <snc mrk="serioz.0igxi.KOMUNE">
    <dif>
      I&gcirc;i <tld/>a:
      <ekz>
        subite &scirc;i <tld/>i&gcirc;is, metis la manojn sur liajn &scirc;ultrojn kaj rigardis en liajn
        okulojn
        <fnt>
          <bib>HsT</bib>
          <lok>Kuni&gcirc;o</lok>
        </fnt>;
      </ekz>
      <ekz>
        &scirc;i foje <tld/>i&gcirc;is, tre <tld/>i&gcirc;is, iom sulkante
        la frunton
        <fnt>
          <aut>Machado de Assis, trad. Paulo Viana</aut>,
          <vrk>La divenistino kaj aliaj rakontoj</vrk>,
          <lok>Oportuno, jaro 2005a, p. 33a</lok>
        </fnt>;
      </ekz>
      <ekz>
        <klr>[tion]</klr> amikmoke komentis la nevo, sed tuj li <tld/>i&gcirc;is
        <fnt>
          <bib>ChV</bib>
          <lok>14</lok>
        </fnt>;
      </ekz>
      <ekz>
        sub la direkto de <nom>Drezen</nom>, balda&ubreve; <tld/>i&gcirc;is la poresperanta agado en Soveta Unio
        <fnt>
          <bib>EeP</bib>
          <lok>Kvara Parto</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_p;&c_a;&c_s;&c_u;&c_r;&#x2019;&c_jo;&c_z;&c_mol;&c_n;&c_je;&c_c;&c_mol;</trd>
  <trd lng="ca">enseriosir-se</trd>
  <trd lng="de"><ind>ernst</ind> werden</trd>
  <trdgrp lng="fr">
    <trd>se <ind>rembrunir</ind></trd>,
    <trd>devenir s&eacute;rieux</trd>
  </trdgrp>
</drv>

<drv mrk="serioz.mal0a">
  <kap>mal<tld/>a</kap>
  <snc mrk="serioz.mal0a.KOMUNE">
    <dif>
      Frivola, &scirc;ercema, nefidinda:
      <ekz>
        malgra&ubreve; la mal<tld/>a &scirc;ajno, li havis noblan kaj energian karakteron
        <fnt>
          <bib>Far3</bib>
          <lok>&Ccirc;apitro XII</lok>
        </fnt>;
      </ekz>
      <ekz>
        liaj movi&gcirc;emaj okuloj estis nun plenaj de mal&gcirc;ojo, la bu&scirc;o, sur kiu oni ordinare
        &ccirc;iam vidis mal<tld/>an rideton, havis nun esprimon bonkoran
        <fnt>
          <bib>Marta</bib>
        </fnt>;
      </ekz>
      <ekz>
        jes estas <nom>Tom</nom>, la plej mal<tld/>a knabo en la tuta universitato
        <fnt><bib>Gerda</bib>, <lok>&ccirc;apitro 1a</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="anim.facil0a">facilanima</ref>,
      <ref cel="gaj.0a">gaja</ref>,
      <ref cel="petol.0ema">petolema</ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_n;&c_je;&c_s;&c_u;&c_r;&#x2019;&c_jo;&c_z;&c_n;&c_y;</trd>
  <trdgrp lng="ca">
    <trd>lleuger</trd>,
    <trd>despreocupat</trd>,
    <trd>negligent</trd>,
    <trd>fluix</trd>,
    <trd>lax</trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>frivoln&iacute;</trd>,
    <trd>le&zcaron;&eacute;rn&iacute;</trd>,
    <trd>nedbal&yacute;</trd>,
    <trd>nev&aacute;&zcaron;n&yacute;</trd>,
    <trd>povrchn&iacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>leichtfertig</trd>,
    <trd>unernst</trd>,
    <trd>scherzhaft</trd>,
    <trd>spa&szlig;ig</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>frivole</trd>,
    <trd>l&eacute;ger<klr tip="amb"> (insouciant)</klr></trd>,
    <trd>superficiel<klr tip="amb"> (insouciant)</klr></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>frivoln&yacute;</trd>,
    <trd>neseri&oacute;zny</trd>,
    <trd>nev&aacute;&zcaron;ny</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&#x43D;&#x435;&#x441;&#x435;&#x440;&#x439;&#x43E;&#x437;&#x43D;&#x438;&#x439;</trd>,
    <trd>&#x43B;&#x435;&#x433;&#x43A;&#x438;&#x439;</trd>,
    <trd>&#x440;&#x43E;&#x437;&#x432;&#x430;&#x436;&#x430;&#x43B;&#x44C;&#x43D;&#x438;&#x439;</trd>,
    <trd>&#x436;&#x430;&#x440;&#x442;&#x456;&#x432;&#x43B;&#x438;&#x432;&#x438;&#x439;</trd>
  </trdgrp>
</drv>
