<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>kamera</rad>/o
</kap>

<drv mrk="kamera.0o">
  <kap><tld/>o</kap>
  <snc mrk="kamera.0o.FOT">
    <uzo tip="fak">FOT</uzo>
    <uzo tip="fak">KIN</uzo>
    <dif>
      Lumriceva aran&gcirc;a&jcirc;o en formo de senluma kesteto kun speciala
      aperturo:
      <ekz>
        &ccirc;ie en la &scirc;ipo trovi&gcirc;as <tld/>oj,
&scirc;prucigiloj, fum- kaj
        fajro-detektiloj
        <fnt>
        <bib>Monato</bib>
        <aut>Christian BERTIN</aut>
        <vrk>Krozado</vrk>
        </fnt>;
      </ekz>
      <ekz>
        la okulo de televida <tld/>o &scirc;an&gcirc;is la bildon al laboratorio
        <fnt>
        <aut>Ivan Efremov, trad. Jurij Finkel</aut>,
        <vrk><url ref="http://www.esperanto.mv.ru/Efremov">Horo de
        Bovo</url></vrk>,
        <lok>&ccirc;apitro 3a</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_m;&c_e;&c_r;&c_a; <klr
tip="amb">(&c_f;&c_o;&c_t;&c_a;-, &c_v;&c_ib;&c_d;&c_e;&c_a;-,
&c_t;&c_e;&c_l;&c_je;- &c_ib; &c_d;&c_a;  &c_g;.&c_p;.)</klr></trd>
  <trd lng="de">Kamera</trd>
  <trdgrp lng="en">
    <trd>camera</trd>,
    <trd>movie camera</trd>,
    <trd>film camera</trd>,
    <trd>video camera</trd>
  </trdgrp>
  <trd lng="fr">cam&eacute;ra</trd>
  <trdgrp lng="hu">
    <trd>kamera</trd>,
    <trd>felvev&odblac;g&eacute;p</trd>,
    <trd>filmfelvev&odblac;</trd>
  </trdgrp>
  <trd lng="ru">&c_k;&c_a;&c_m;&c_je;&c_r;&c_a;<klr tip="amb">
(&c_f;&c_o;&c_t;&c_o;, &c_v;&c_i;&c_d;&c_je;&c_o;, &c_T;&c_V; &c_i;
&c_t;.&c_p;.)</klr></trd>
</drv>

<drv mrk="kamera.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="kamera.0i.FOT">
    <dif>
      Registri per <tld/>o.
    </dif>
    <ref tip="sin" cel="film.0i">filmi</ref>
  </snc>
  <trd lng="de">filmen</trd>
  <trd lng="en">film</trd>
  <trd lng="fr">filmer</trd>
  <trdgrp lng="hu">
    <trd>felvesz <klr tip="ind">(filmet)</klr></trd>,
    <trd>filmez</trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_n;&c_i;&c_m;&c_a;&c_t;&c_mol;<klr tip="amb">
(&c_k;&c_a;&c_m;&c_je;&c_r;&c_o;&c_j;)</klr></trd>
</drv>

<drv mrk="kamera.0isto">
  <kap><tld/>isto</kap>
  <snc mrk="kamera.0isto.FOT">
    <dif>
      Profesiulo, kiu <tld/>as, ekzemple nova&jcirc;bultenon, kina&jcirc;on.
    </dif>
  </snc>
  <trd lng="de">Kameramann</trd>
  <trdgrp lng="en">
    <trd>cameraman</trd>,
    <trd>cinematographer</trd>
  </trdgrp>
  <trdgrp lng="fr">
    <trd>cameraman</trd>,
    <trd>cadreur<klr tip="ind"> (cameraman)</klr></trd>,
    <trd>op&eacute;rateur de prise de vues</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>operat&odblac;r</trd>,
    <trd>kameraman</trd>
  </trdgrp>
  <trd lng="ru">&c_o;&c_p;&c_je;&c_r;&c_a;&c_t;&c_o;&c_r;<klr
tip="amb"> (&c_v;&c_i;&c_d;&c_je;&c_o;, &c_T;&c_V; &c_i;
&c_t;.&c_p;.)</klr></trd>
</drv>
<adm>
  La&ubreve; la difino kaj la rusa traduko fotilo devus esti speco de kamerao,
  pri kio mi dubas, precipe pro la deriva&jcirc;oj ~i, ~isto. Vd anka&ubreve;
  "kamero".
  <aut>MB</aut>
</adm>
</art>
