<art mrk="$Id: kamera.xml,v 1.31 2025/12/28 06:52:19 revo Exp $">
<kap>
  <rad>kamera</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>

<drv mrk="kamera.0o">
  <kap><tld/>o</kap>
  <snc mrk="kamera.0o.FOT">
    <uzo tip="fak">FOT</uzo>
    <uzo tip="fak">KIN</uzo>
    <dif>
      Aparato provizita per lenso, registranta sinsekvajn bildojn:
      <!-- tio estas kamero:
      Lumriceva aran&gcirc;a&jcirc;o en formo de senluma kesteto kun speciala
      aperturo:
      -->
      <ekz>
        &ccirc;ie en la &scirc;ipo trovi&gcirc;as <tld/>oj,
        &scirc;prucigiloj, fum- kaj fajro-detektiloj
        <fnt>
        <aut>C. Bertin</aut>,
          <vrk>Krozado</vrk>,
          <bib>Monato</bib>
        </fnt>;
      </ekz>
      <ekz>
        la okulo de televida <tld/>o &scirc;an&gcirc;is la bildon al laboratorio
        <fnt>
        <aut>I. Efremov, trad. J. Finkel</aut>,
         <vrk><url ref="http://esperanto-mv.pp.ru/Efremov/horo.html">
         Horo de Bovo</url></vrk>,
         <lok>2005</lok>
        </fnt>;
      </ekz>
      <ekz>
        kontrola <tld/>o
        <fnt>
          <bib>CKv</bib>
          <lok>25</lok>
        </fnt>;
      </ekz>
      <ekz>
        parkeja <tld/>o
        <fnt>
          <bib>Kon11</bib>
          <lok>Blogo de murdoplananto</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi alte rekomendas videoblogadon <klr>[&#8230;]</klr>, vi bezonas <tld/>on,
        video-redakilon, kaj sufi&ccirc;e bonan interreton
        <fnt>
          <bib>Kon11</bib>
          <lok>Intervjuo</lok>
        </fnt>;
      </ekz>
      <ekz>
        metrostaciaj <tld/>oj en Japanio a&ubreve;tomate rekonas ebriulojn
        <fnt>
          <bib>Kon11</bib>
          <lok>Kontaktek</lok>
        </fnt>;
      </ekz>
      <ekz>
        li rimarkis aliajn membrojn de la bando, kiuj filmis lin, uzante siajn
        po&scirc;telefonajn <tld/>ojn
        <fnt>
          <bib>Monato</bib>
          <aut>Paul Gubbins</aut>
          <vrk><url ref="&Monato;/2005/008669.php"
              >&Scirc;ati-bati</url></vrk>
          <lok>2005</lok>
        </fnt>;
      </ekz>
      <ekz>
        policaj uniformoj, observaj <tld/>oj, suba&ubreve;skulta ilaro
        <fnt>
          <bib>Monato</bib>
          <aut>Bardhyl Selimi</aut>
          <vrk><url ref="&Monato;/2012/010554.php"
              >Armiloj novaj kaj malnovaj</url></vrk>
          <lok>2012</lok>
        </fnt>.
      </ekz>
    </dif>
    <ref tip="sin" cel="kamer.0o.kamerao">kamero<sncref/></ref>
    <refgrp tip="vid">
      <ref cel="fot.0ilo">fotilo</ref>,
      <ref cel="kamer.0o.fotila">kamero<sncref/></ref>
    </refgrp>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_m;&c_e;&c_r;&c_a;<klr tip="amb"> (&c_f;&c_o;&c_t;&c_a;-, &c_v;&c_ib;&c_d;&c_e;&c_a;-,
  &c_t;&c_e;&c_l;&c_je;- &c_ib; &c_d;&c_a;  &c_g;.&c_p;.)</klr></trd>
  <trd lng="ca">c&agrave;mera</trd>
  <trd lng="cs">sn&iacute;mac&iacute; kamera</trd>
  <trdgrp lng="de">
    <trd>Filmkamera</trd>,
    <trd>Filmaufnahmeger&auml;t</trd>
  </trdgrp>
  <trdgrp lng="en">
    <trd>camera</trd>,
    <trd>movie camera</trd>,
    <trd>film camera</trd>,
    <trd>video camera</trd>
  </trdgrp>
  <trd lng="es">c&aacute;mara</trd>
  <trd lng="fr">cam&eacute;ra</trd>
  <trdgrp lng="hu">
    <trd>kamera</trd>,
    <trd>felvev&odblac;g&eacute;p</trd>,
    <trd>filmfelvev&odblac;</trd>
  </trdgrp>
  <trd lng="ja">&#12459;&#12513;&#12521;  <pr>&#12363;&#12417;&#12425;</pr></trd>
  <trdgrp lng="nl">
    <trd>filmcamera</trd>,
    <trd>televisiecamera</trd>
  </trdgrp>
  <trd lng="pl">kamera <klr>filmowa</klr></trd>
  <trd lng="ro">camer&abreve; <klr>de filmat</klr></trd>
  <trd lng="ru">&c_k;&c_a;&c_m;&c_je;&c_r;&c_a;<klr tip="amb"> (&c_f;&c_o;&c_t;&c_o;, &c_v;&c_i;&c_d;&c_je;&c_o;, &c_T;&c_V; &c_i;
  &c_t;.&c_p;.)</klr></trd>
  <trd lng="sk">sn&iacute;macia kamera</trd>
  <trdgrp lng="uk">
    <trd>&c_f;&c_o;&c_t;&c_o; &c_k;&c_a;&c_m;&c_je;&c_r;&c_a;</trd>,
    <trd>&c_f;&c_o;&c_t;&c_o;&c_k;&c_a;&c_m;&c_je;&c_r;&c_a;</trd>,
    <trd>&c_k;&c_ib;&c_n;&c_o;&c_k;&c_a;&c_m;&c_je;&c_r;&c_a;</trd>
  </trdgrp>
  <trdgrp lng="zh">
    <trd>&#25668;&#24433;&#26426; <pr>sh&egrave;y&#464;ngj&imacron;</pr></trd>,
    <trd>&#25668;&#20687;&#26426; <pr>sh&egrave;xi&agrave;ngj&imacron;</pr></trd>,
    <trd>&#29031;&#20687;&#26426; <pr>zh&agrave;oxi&agrave;ngj&imacron;</pr></trd>,
    <trd>&#29031;&#30456;&#26426; <pr>zh&agrave;oxi&agrave;ngj&imacron;</pr></trd>,
    <trd>&#25668;&#30456;&#26426; <pr>sh&egrave;xi&amacron;ngj&imacron;</pr></trd>
  </trdgrp>
</drv>

<drv mrk="kamera.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="kamera.0i.FOT">
    <dif>
      <ref tip="super" cel="regist.0i.TEK_datumojn">Registri</ref> per <tld/>o.
    </dif>
    <ref tip="sin" cel="film.0i">filmi</ref>
  </snc>
  <trd lng="be">&c_z;&c_d;&c_y;&c_m;&c_a;&c_c;&c_mol; &c_n;&c_a; &c_k;&c_a;&c_m;&c_e;&c_r;&c_u;</trd>
  <trdgrp lng="ca">
    <trd>enregistrar</trd>,
    <trd>filmar</trd>
  </trdgrp>
  <trd lng="cs">nat&aacute;&ccaron;et kamerou</trd>
  <trdgrp lng="de">
    <trd>filmen</trd>,
    <trd>aufnehmen <klr>(filmen)</klr></trd>
  </trdgrp>
  <trd lng="en">film</trd>
  <trdgrp lng="es">
    <trd>grabar con una c&aacute;mara</trd>,
    <trd>filmar</trd>
  </trdgrp>
  <trd lng="fr">filmer</trd>
  <trdgrp lng="hu">
    <trd>felvesz <klr tip="ind">(filmet)</klr></trd>,
    <trd>filmez</trd>
  </trdgrp>
  <trd lng="nl">filmen</trd>
  <trdgrp lng="pl">
    <trd>nagrywa&cacute; <ind>kamer&aogonek;</ind></trd>,
    <trd>kamerowa&cacute; <klr>(pot.)</klr></trd>
  </trdgrp>
  <trd lng="ru">&c_s;&c_n;&c_i;&c_m;&c_a;&c_t;&c_mol;<klr tip="amb">
(&c_k;&c_a;&c_m;&c_je;&c_r;&c_o;&c_j;)</klr></trd>
  <trd lng="sk">nat&aacute;&ccaron;a&tcaron; kamerou</trd>
  <trdgrp lng="zh">
    <trd>&#24405;&#24433; <pr>l&ugrave;y&#464;ng</pr></trd>,
    <trd>&#25293;&#29255; <pr>p&amacron;ipi&agrave;n</pr></trd>
  </trdgrp>
</drv>

<drv mrk="kamera.0isto">
  <kap><tld/>isto</kap>
  <snc mrk="kamera.0isto.FOT">
    <uzo tip="fak">KIN</uzo>
    <dif>
      Profesiulo, kiu <tld/>as, ekzemple nova&jcirc;bultenon, kina&jcirc;on:
      <ekz>
        &ccirc;ar tie apena&ubreve; &ccirc;eestas raportistoj kaj <tld/>istoj, oni malmulte legas kaj
        spektas ilin
        <fnt>
          <bib>Monato</bib>
          <aut>Josef &Scirc;emer</aut>
          <vrk><url ref="&Monato;/2008/009524.php"
              >La juda &scirc;tato 60-jara</url></vrk>
          <lok>2008</lok>
        </fnt>;
      </ekz>
      <ekz>
        interreta televizio postulas aliajn aparatojn <klr>[&#8230;]</klr>,la studio ne bezonas
        <tld/>istojn, &ccirc;ar la teknologio de elsendfluo ne akceptas
        rapidegajn movojn nek de la filmanto, nek de la filmato
        <fnt>
          <bib>LOdE</bib>
          <lok>2004, &#8470; 4 (114)</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_a;&c_p;&c_e;&c_r;&c_a;&c_t;&c_a;&c_r; <klr>(&c_k;&c_a;&c_m;&c_e;&c_r;&c_y;)</klr></trd>
  <trdgrp lng="ca">
    <trd>c&agrave;mera</trd>,
    <trd>camer&agrave;man</trd>,
    <trd>segon operador</trd>
  </trdgrp>
  <trd lng="cs">kameraman</trd>
  <trd lng="de">Kameramann</trd>
  <trdgrp lng="en">
    <trd>cameraman</trd>,
    <trd>cinematographer</trd>
  </trdgrp>
  <trd lng="es">camar&oacute;grafo</trd>
  <trdgrp lng="fr">
    <trd>cameraman</trd>,
    <trd>cadreur<klr tip="ind"> (cameraman)</klr></trd>,
    <trd>op&eacute;rateur de prise de vues</trd>
  </trdgrp>
  <trdgrp lng="hu">
    <trd>operat&odblac;r</trd>,
    <trd>kameraman</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#12459;&#12513;&#12521;&#12510;&#12531;  <pr>&#12363;&#12417;&#12425;&#12414;&#12435;</pr></trd>,
    <trd>&#25774;&#24433;&#25216;&#24107;  <pr>&#12373;&#12388;&#12360;&#12356;&#12366;&#12375;</pr></trd>
  </trdgrp>
  <trd lng="nl">cameraman</trd>
  <trdgrp lng="pl">
    <trd>kamerzysta</trd>,
    <trd>operator <ind>kamery</ind></trd>
  </trdgrp>
  <trd lng="ru">&c_o;&c_p;&c_je;&c_r;&c_a;&c_t;&c_o;&c_r;<klr tip="amb"> (&c_v;&c_i;&c_d;&c_je;&c_o;, &c_T;&c_V; &c_i; &c_t;.&c_p;.)</klr></trd>
  <trd lng="sk">kameraman</trd>
  <trdgrp lng="uk">
    <trd>&c_o;&c_p;&c_je;&c_r;&c_a;&c_t;&c_o;&c_r;</trd>,
    <trd>&c_k;&c_ib;&c_n;&c_o;&c_o;&c_p;&c_je;&c_r;&c_a;&c_t;&c_o;&c_r;</trd>
  </trdgrp>
  <trd lng="zh">&#25668;&#24433;&#24072; <pr>sh&egrave;y&#464;ngsh&imacron;</pr></trd>
</drv>

<drv mrk="kamera.gvat0o">
  <kap>
    gvat<tld/>o
  </kap>
  <snc mrk="kamera.gvat0o.KOMUNE">
    <dif>
      A&ubreve;tomate, da&ubreve;re funkcianta <tld/>o, per kiu oni kontrolas
      okaza&jcirc;ojn en la loko, kiun &gcirc;i gvatas:
      <ekz>
        nombro de gvat<tld/>oj kompare al tiu de lo&gcirc;antoj
        estas la plej alta en la lando
        <fnt>
          <aut>RG72</aut>
          <vrk><url
          ref="https://eo.wikinews.org/wiki/Francio_en_konfronti%C4%9Do_kontra%C5%AD_la_islama_mondo">Francio
          en konfronti&gcirc;o kontra&ubreve; la islama mondo</url></vrk>
          <lok>Vikinova&jcirc;oj, 2020-11-20</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_k;&c_a;&c_m;&c_e;&c_r;&c_a; &c_n;&c_a;&c_z;&c_ib;&c_r;&c_a;&c_n;&c_mol;&c_n;&c_ja;</trd>
  <trd lng="de">&Uuml;berwachungskamera</trd>
  <trd lng="fr">cam&eacute;ra de <ind>vid&eacute;osurveillance</ind></trd>
  <trd lng="ja">&#30435;&#35222;&#12459;&#12513;&#12521;  <pr>&#12363;&#12435;&#12375;&#12459;&#12513;&#12521;</pr></trd>
  <trd lng="pl">kamera monitoruj&aogonek;ca</trd>
  <trd lng="uk">&c_p;&c_r;&c_i;&c_h;&c_o;&c_v;&c_a;&c_n;&c_a; &c_k;&c_a;&c_m;&c_je;&c_r;&c_a;</trd>
</drv>

<drv mrk="kamera.vide0o">
  <kap>vide<tld/>o, <var><kap>video<tld/>o</kap></var>,
  <var><kap>vidbend<tld/>o</kap></var></kap>
  <snc mrk="kamera.vide0o.KIN">
    <uzo tip="fak">KIN</uzo>
    <uzo tip="fak">TEK</uzo>
    <dif>
      Videfilmilo; aparato por videa registrado de movi&gcirc;aj bildoj:
      <ekz>
        <klr>[ili]</klr> ofte ne portas fotilon a&ubreve; vidbend<tld/>on
        <fnt>
          <bib>Monato</bib>
          <vrk>Ruze eniri, akuze eliri</vrk>
        </fnt>;
      </ekz>
      <ekz>
        kunligi lingvolernadon, komputilon, vide<tld/>on aktoradon,
        arton kaj amuzon en amikeca atmosfero estas venkanta strategio
        <fnt>
          <aut>E. Fabian</aut>,
          <vrk>Necesas instruado...</vrk>,
          <lok><url ref="&SCE;">
          soc.culture.esperanto</url>, 2009-04-25</lok>
        </fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="be">&c_v;&c_ib;&c_d;&c_e;&c_a;&c_k;&c_a;&c_m;&c_e;&c_r;&c_a;</trd>
  <trd lng="ca"><ind>c&agrave;mera</ind> de v&iacute;deo</trd>
  <trd lng="de">Videokamera</trd>
  <trdgrp lng="fr">
    <trd>cam&eacute;ra vid&eacute;o</trd>,
    <trd>cam&eacute;scope</trd>
  </trdgrp>
  <trd lng="es">videoc&aacute;mara</trd>
  <trd lng="ja">&#12499;&#12487;&#12458;&#12459;&#12513;&#12521;</trd>
  <trd lng="pl">kamera wideo</trd>
  <trd lng="zh">&#25668;&#20687;&#26426; <pr>sh&egrave;xi&agrave;ngj&imacron;</pr></trd>
</drv>
