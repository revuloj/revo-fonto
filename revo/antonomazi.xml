<vortaro>
<art mrk="$Id: antonomazi.xml,v 1.7 2022/09/27 22:38:17 revo Exp $">
<kap>
  <rad>antonomazi</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="antonomazi.0o">
  <kap><tld/>o</kap>
  <uzo tip="fak">LIN</uzo>
  <snc>
    <dif>
      <ref tip="super" cel="figur.stil0o">Stilfiguro</ref> per kiu oni
      aludas individuon per klasa nomo, ekzemple &leftquot;Aristotelon&rightquot;
      per &leftquot;la filozofo&rightquot;, a&ubreve; per nomo de alia, tipa individuo,
      ekzemple &leftquot;Bru&gcirc;on&rightquot; per &leftquot;la norda Venecio&rightquot; (pro &gcirc;iaj kanaloj):
      <ekz>
        &ccirc;iu ilin konanta, nomis ilin <tld/>e <klr>...</klr> <em>la du
        amikoj</em><fnt><bib>DonKihxoto</bib>, <lok>&ccirc;apitro 33a, p.
        245a</lok></fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="metonimi.0o">metonimio</ref>,
      <ref cel="sinekdohx.0o">sinekdo&hcirc;o</ref>
    </refgrp>
  </snc>  
  <trdgrp lng="be">
    <trd>&c_a;&c_n;&c_t;&c_a;&c_n;&c_a;&c_m;&c_a;&c_z;&c_ib;&c_ja;</trd>,
    <trd>&c_a;&c_n;&c_t;&c_a;&c_n;&c_a;&c_m;&c_a;&c_s;&c_ib;&c_ja;</trd>
  </trdgrp>
  <trd lng="fr">antonomase</trd>
  <trd lng="hu">antonom&aacute;zia</trd>
  <trd lng="pl">antonomazja</trd>
  <trd lng="ro">antonomaz&abreve;</trd>
  <trd lng="ru">&c_a;&c_n;&c_t;&c_o;&c_n;&c_o;&c_m;&c_a;&c_z;&c_i;&c_ja;</trd>
  <trd lng="uk">&c_a;&#x43D;&c_t;&#x43E;&#x43D;&#x43E;&#x43C;&c_a;&c_z;&c_ib;&#x44F;</trd>
</drv>
</art>

