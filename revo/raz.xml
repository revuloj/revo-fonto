<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>raz</rad>/i
</kap>
<drv mrk="raz.0i">
  <kap><ofc>*</ofc><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <dif>
    Fortran&ccirc;i ion tutproksime &ccirc;e ties radiko:
  </dif>
  <snc>
    <uzo tip="klr">(pp haroj)</uzo>
    <dif>
      :
      <ekz>
        <tld/>i al iu la barbon<fnt>B</fnt>;
      </ekz>
      <ekz>
        fre&scirc;e <tld/>ita barbo;
      </ekz>
      <ekz>
        viro kun <tld/>itaj lipharoj;
      </ekz>
      <ekz>
        <klr>(f)</klr>
        la ventego for<tld/>is de la tero tutajn vila&gcirc;ojn.
      </ekz>
    </dif>
    <trd lng="nl">scheren</trd>
  </snc>
  <snc>
    <uzo tip="klr">(pp tio, kio portas la harojn)</uzo>
    <dif>
      :
      <ekz>
        <tld/>i la kapon, la vangojn;
      </ekz>
      <ekz>
        <tld/>ita ronda&jcirc;o sur verto de pastro
        (<ref tip="sin" cel="tonsur.0o">tonsuro</ref>);
      </ekz>
      <ekz>
        <tld/>i iun glate.
      </ekz>
    </dif>
    <trd lng="nl">scheren</trd>
  </snc>
  <snc>
    <uzo tip="klr">(pp herbo)</uzo>
    <dif>
      tondi:
      <ekz>
        <tld/>i la herbon de la &gcirc;ardeno
        <fnt><bib>ItEsp</bib></fnt>.
      </ekz>
    </dif>
    <trd lng="nl">maaien</trd>
  </snc>
  <trd lng="de">rasieren</trd>
  <trd lng="en">shave</trd>
  <trd lng="fr">raser</trd>
  <trd lng="lat">rado, ere</trd>
  <trd lng="pl">goli&cacute;</trd>
  <trd lng="ru">&c_b;&c_r;&c_i;&c_t;&c_mol;</trd>
  <trd lng="sv">raka</trd>
  <trd lng="tr">t&inodot;ra&scedil; etmek</trd>
</drv>

<drv mrk="raz.0ilo">
  <kap><tld/>ilo</kap>
  <snc>
    <dif>
      Speciala tran&ccirc;ilo, kun tre akretran&ccirc;a klingo, destinita
      por <tld/>i:
      <ekz>
        oni ne bezonas <tld/>ilon por tran&ccirc;i lignon.
      </ekz>
    </dif>
  </snc>
  <trd lng="de">Rasiermesser</trd>
  <trd lng="fr">rasoir</trd>
  <trd lng="lat">nouacula, ae</trd>
  <trdgrp lng="nl">
    <trd>scheermes</trd>,
    <trd>scheerapparaat</trd>
  </trdgrp>
  <trd lng="pl">golarka</trd>
  <trd lng="ru">&c_b;&c_r;&c_i;&c_t;&c_v;&c_a;</trd>
  <trd lng="sv">rakhyvel</trd>
  <trdgrp lng="tr">
    <trd>ustura</trd>,
    <trd>t&inodot;ra&scedil; b&inodot;&ccedil;a&gbreve;&inodot;</trd>
  </trdgrp>
</drv>

<drv mrk="raz.0isto">
  <kap><tld/>isto</kap>
  <snc>
    <dif>
      <ref tip="dif" cel="barbir.0o">Barbiro</ref>.
    </dif>
  </snc>
  <trd lng="nl">barbier</trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_a;&c_r;&c_i;&c_k;&c_m;&c_a;&c_h;&c_je;&c_r;</trd>,
    <trd>&c_b;&c_r;&c_a;&c_d;&c_o;&c_b;&c_r;&c_je;&c_j;</trd>,
    <trd>&c_c;&c_i;&c_r;&c_ju;&c_l;&c_mol;&c_n;&c_i;&c_k;</trd>
  </trdgrp>
  <trd lng="sv">barberare</trd>
</drv>
</art>
