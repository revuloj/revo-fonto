<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <ofc>*</ofc>
  <rad>plad</rad>/o
</kap>
<drv mrk="plad.0o">
  <kap><ofc>*</ofc><tld/>o</kap>
  <snc mrk="plad.0o.propr">
    <dif>
      Granda telero, kiu servas por alporti sur la tablon la manĝaĵojn,
      disdonotajn al ĉiu manĝanto:
      <ekz>
        <tld/>o da griaĵo<fnt>Z</fnt>.
      </ekz>
    </dif>
    <trdgrp lng="en">
      <trd>platter</trd>,
      <trd>dish</trd>,
      <trd>tray</trd>
    </trdgrp>
    <trd lng="hu">tál</trd>
    <trdgrp lng="nl">
      <trd>schaal</trd>,
      <trd>schotel</trd>
    </trdgrp>
    <trd lng="pt">prato</trd>
  </snc>
  <snc mrk="plad.0o.mangx">
    <uzo tip="fak">KUI</uzo>
    <dif>
      La manĝaĵo entenata en <ref tip="vid"
      cel="plad.0o.propr"><tld/>o</ref>.
    </dif>
    <trdgrp lng="en">
      <trd>course</trd>,
      <trd>plate</trd>,
      <trd>platter</trd>,
      <trd>dish</trd>
    </trdgrp>
    <trd lng="hu">étel</trd>
    <trd lng="nl">gerecht</trd>
  </snc>
  <snc mrk="plad.0o.menu">
    <uzo tip="fak">KUI</uzo>
    <dif>
      Ĉiu el la eroj, kiuj konsistigas <ref tip="malprt"
      cel="menu.0o.bankeda">menuon</ref>.
    </dif>
    <trdgrp lng="en">
      <trd>course</trd>,
    </trdgrp>
    <trd lng="nl">gerecht</trd>
  </snc>
  <trd lng="de">Platte</trd>
  <trd lng="es">plato</trd>
  <trd lng="fr">plat<klr tip="ind"> (subst.)</klr></trd>
  <trd lng="hu">fogás<klr tip="ind"> (étel)</klr></trd>
  <trd lng="ru">блюдо</trd>
</drv>

<drv mrk="plad.antaux0o">
  <kap>antaŭ<tld/>o</kap>
  <uzo tip="fak">KUI</uzo>
  <snc>
    <dif>
      <tld lit="P"/>o, destinita por paciencigi malsatulojn, antaŭ
      la manĝo:
      <ekz>
        <uzo tip="stl">FIG</uzo>
        <ind>antaŭ<tld/>e al</ind> la tagmanĝo, Kant ricevis
        de Yvonne, la kara edzineto, unue kiseton, kaj poste predikon iom
        severan
        <fnt><bib>UrdHadda</bib><lok>p. 11</lok></fnt>.
        <trdgrp lng="fr">
          <trd>en guise d'<ind>amuse-gueule</ind> à</trd>,
          <trd>en guise d'<ind>entrée en matière</ind> à</trd>,
          <trd>en <ind>prélude</ind> à</trd>
        </trdgrp>
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">amuse-gueule</trd>
  <trd lng="ru">лёгкая <ind>закуска</ind></trd>
</drv>
</art>
