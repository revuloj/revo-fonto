<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
  <rad>kartuzi</rad>/o <fnt><bib>PIV1</bib></fnt>
</kap>
<drv mrk="kartuzi.0o">
  <kap><tld/>o</kap>
  <snc mrk="kartuzi.0o.KAT">
    <uzo tip="fak">KAT</uzo>
    <dif>
      <ref tip="super" cel="monahx.0ejo">Mona&hcirc;ejo</ref> de la <tld/>a
      ordeno, kutime izola en montara a&ubreve; sova&gcirc;a loko.
    </dif>
  </snc>
  <trd lng="fr">chartreuse<klr> (monast&egrave;re)</klr></trd>
</drv>

<drv mrk="kartuzi.0ano">
  <kap><tld/>ano</kap>
  <snc mrk="kartuzi.0ano.KAT">
    <uzo tip="fak">KAT</uzo>
    <dif>
      <ref tip="super" cel="monahx.0o">Mona&hcirc;o</ref> vivanta la&ubreve; la
      regularo starigita de sankta Bruno en la 11a jarcento:
      <ekz>
        mi kredas, ke e&ccirc; ne la <tld/>ana vivo estas tiel
        rigora
        <fnt><bib>DonKihxoto</bib>, <lok>parto 1a, &ccirc;apitro 13a, p.
        92a</lok></fnt>.
      </ekz>
    </dif>
  </snc>
  <trd lng="fr">chartreux</trd>
</drv>
</art>

