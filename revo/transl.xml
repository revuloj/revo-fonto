<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">

<vortaro>
<art mrk="$Id$">
<kap>
<rad>translaci</rad>/o
</kap>
<drv mrk="transl.0o">
  <kap><tld/>o</kap>
  <fnt><bib>PIV1</bib></fnt>
  <snc mrk="transl.0o.kinematiko">
    <uzo tip="fak">FIZ</uzo>
    <uzo tip="klr">(kinematiko)</uzo>
    <dif>
      <klr>(de <ref cel="solid.0o.kinematiko">solido</ref>)</klr>
      Tia movo, ke &ccirc;iu <ref cel="par.punkto0o">punktoparo</ref>
      de &gcirc;i restas ekvipolenta al si mem.
    </dif>
  <trd lng="nl">verplaatsing<klr tip="ind"> (fys.)</klr></trd>
  </snc>
  <snc mrk="transl.0o.MAT">
    <uzo tip="fak">MAT</uzo>
    <dif>
      <klr>(en <ref cel="spac.afina0o">afina spaco</ref>,
      la&ubreve; vektoro &tau;)</klr>
      <ref cel="afin.0a.bildigo">Afina</ref>
      <ref tip="super" cel="bild.0igo">bildigo</ref>, kiu &jcirc;etas punkton
      M al &tau;+M; alidire: <ref cel="operac.ekstera0o.elemento">operacio</ref>
      de vektoro &tau; super la koncerna afina spaco:
      <ekz>
        per <tld/>o la longoj, areoj kaj anguloj restas egalaj.
      </ekz>
    </dif>
    <trd lng="de">Translation</trd>
    <trd lng="en">translation<klr tip="ind"> (math.)</klr></trd>
    <trd lng="nl">verplaatsing<klr tip="ind"> (wisk.)</klr></trd>
    <trd lng="ru">&c_t;&c_r;&c_a;&c_n;&c_s;&c_l;&c_ja;&c_c;&c_i;&c_ja;</trd>
  </snc>
  <snc mrk="transl.0o.JUR">
    <uzo tip="fak">JUR</uzo>
    <dif>
      Transigo de rajto.
    </dif>
  <trd lng="nl">overdracht<klr tip="ind"> (recht)</klr></trd>
</snc>
  <trd lng="fr">translation<klr tip="ind"> (m&eacute;c., math., droit)</klr></trd>
</drv>
</art>

