<?xml version="1.0"?>
<!DOCTYPE vortaro SYSTEM "../dtd/vokoxml.dtd">
<vortaro>
<art mrk="$Id: vizi.xml,v 1.27 2023/10/21 16:50:36 revo Exp $">
<kap>
  <ofc>6</ofc>
  <rad>vizi</rad>/o <fnt><bib>PV</bib></fnt>
</kap>

<drv mrk="vizi.0o">
  <kap><tld/>o</kap>
  <snc mrk="vizi.0o.KOMUNE">
    <dif>
      Nereala sed viveca kaj mensa bildo,
      estigita per dia <ref cel="revela.0o">revelacio</ref>,
      <ref cel="fantaz.0o">fantazio</ref>, pasio ktp:
      <ekz>
        tiel mi vidis la &ccirc;evalojn en la <tld/>o, kaj <klr>[&#x2026;]</klr> la kapoj de la
        &ccirc;evaloj estis kiel kapoj de leonoj, kaj el iliaj bu&scirc;oj eliris fajro
        <fnt>
          <bib>NT</bib>
          <lok>Apokalipso 9:17</lok>
        </fnt>;
      </ekz>
      <ekz>
        Dio parolas en unu maniero kaj en alia maniero, <klr>[&#x2026;]</klr> en son&gcirc;o, en
        nokta <tld/>o
        <fnt>
          <bib>MT</bib>
          <lok>Ijob 33:15</lok>
        </fnt>;
      </ekz>
      <ekz>
        la vorto de la Eternulo estis grandpreza en tiu tempo, ne aperadis ofte profetaj
        <tld/>oj
        <fnt>
          <bib>MT</bib>
          <lok>I. Samuel 3:1</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="aper.0ajxo">apera&jcirc;o</ref>,
      <ref cel="songx.0o">son&gcirc;o</ref>
    </refgrp>
    <rim>
      Kontraste al <ref cel="haluci.0o">halucino</ref> a&ubreve; <ref cel="delir.0o">deliro</ref>, <tld/>o
      povas esti rigardata kiel io valora &ndash; ekzemple religie, arte a&ubreve; idee.
    </rim>
    <trdgrp lng="be">
      <trd>&c_p;&c_r;&c_y;&c_v;&c_ib;&c_d;</trd>,
      <trd>&c_z;&c_d;&c_a;&c_n;&c_mol;</trd>
    </trdgrp>
    <trd lng="de">Vision</trd>
    <trd lng="el">&omikron_ton;&rho;&alfa;&my;&alfa;</trd>
    <trd lng="en">vision</trd>
    <trd lng="es">visi&oacute;n</trd>
    <trd lng="fr">vision<klr> (rel.)</klr></trd>
    <trdgrp lng="hu">
      <trd>l&aacute;tom&aacute;s</trd>,
      <trd>v&iacute;zi&oacute;</trd>
    </trdgrp>
    <trd lng="nl">visioen</trd>
    <trd lng="pt">vis&atilde;o</trd>
    <trd lng="ru">&c_v;&c_i;&c_d;&c_Je;&c_n;&c_i;&c_je;</trd>
    <trd lng="sk">v&iacute;zia</trd>
  </snc>
  <snc mrk="vizi.0o.FIG">
    <uzo tip="stl">FIG</uzo>
    <uzo tip="stl">RAR</uzo>
    <dif>
      Imago pri estonta aferstato,
      <ref tip="vid" cel="projek1.0o">projekto</ref>,
      celo:
      <ekz>
        Vi etendis viajn manojn al la vivo kaj volis &ccirc;irka&ubreve;braki &ccirc;ion bonan en &gcirc;i,
        <klr>[&#x2026;]</klr> vizioj kaj revoj &scirc;an&gcirc;i&gcirc;as, sed ankora&ubreve; vi apartenas al la sama
        vivo
        <fnt>
          <bib>HsT</bib>
          <lok>Kuni&gcirc;o</lok>
        </fnt>;
      </ekz>
      <ekz>
      la germana kanceliero <nom>Kohl</nom> prezentis <tld/>on, kiel la eventoj povus plue
      disvolvi&gcirc;i
      <fnt>
      <aut>Franz-Georg R&ouml;ssler</aut>
        <vrk><url ref="&Monato;/2011/010545.php">Viziuloj: iru kuracisten</url></vrk>
        <bib>Monato</bib>
        <lok>2011/12, p. 8</lok>
      </fnt>;
      </ekz>
      <ekz>
        mi bezonas iom bildigi al vi mian <tld/>on, kiu interalie donas
        grandan rolon al la kontinueco
        <fnt>
          <aut>P. Dasgupta</aut>,
          <vrk>en: <url ref="http://www.liberafolio.org/2007/probalintervjuo">
          La sekva prezidanto volas reinventi UEA-n</url></vrk>,
          <lok>2007-04-30</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="ideal.0o.perfekteco">idealo<sncref/></ref>,
      <ref cel="imag.0o.imagado">imago<sncref/></ref>,
      <ref cel="rev.0o">revo</ref>,
      <ref cel="utopi.0o">utopio</ref>
    </refgrp>
    <trdgrp lng="be">
      <trd>&c_b;&c_a;&c_ch;&c_a;&c_n;&c_mol;&c_n;&c_je;</trd>,
      <trd>&c_u;&c_ja;&c_w;&c_l;&c_je;&c_n;&c_mol;&c_n;&c_je;</trd>
    </trdgrp>
    <trd lng="fr">vision des choses</trd>
    <trd lng="nl">visie</trd>
  </snc>
  <trdgrp lng="cs">
    <trd>blud</trd>,
    <trd>p&rcaron;&iacute;zrak</trd>,
    <trd>vid&ecaron;n&iacute;</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x5E7B;&#x5F71;  <pr>&#x3052;&#x3093;&#x3048;&#x3044;</pr></trd>,
    <trd>&#x5E7B;  <pr>&#x307E;&#x307C;&#x308D;&#x3057;</pr></trd>,
    <trd>&#x5E7B;&#x8996;  <pr>&#x3052;&#x3093;&#x3057;</pr></trd>,
    <trd>&#x5E7B;&#x899A;  <pr>&#x3052;&#x3093;&#x304B;&#x304F;</pr></trd>,
    <trd>&#x898B;&#x795E;  <pr>&#x3051;&#x3093;&#x3057;&#x3093;</pr></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>prelud</trd>,
    <trd>vidina</trd>,
    <trd>zjavenie</trd>
  </trdgrp>
  <trdgrp lng="uk">
    <trd>&c_v;&c_i;&c_d;&c_ib;&c_n;&c_n;&c_ja;</trd>,
    <trd>&c_z;&#x2019;&c_ja;&c_v;&c_a;</trd>,
    <trd>&c_p;&c_r;&c_i;&c_m;&c_a;&c_r;&c_a;</trd>
  </trdgrp>
</drv>

<drv mrk="vizi.0i">
  <kap><tld/>i</kap>
  <gra><vspec>tr</vspec></gra>
  <snc mrk="vizi.0i.KOMUNE">
    <dif>
      <ref tip="super" cel="vid.0i">Vidi</ref> en <tld/>o:
      <ekz>
        profeta&jcirc;o pri <nom>Babel</nom>, kiun <tld/>is <nom>Jesaja</nom>
        <fnt><bib>MT</bib>, <lok>&Jes; 13:1</lok></fnt>;
      </ekz>
      <ekz>
        <uzo tip="stl">FIG</uzo>
        mia artikolo en 1995 <tld/>is ian formorton de la kino hungara, profite al
        filmoj usonaj
        <fnt>
          <bib>Monato</bib>
          <aut>Istvan Ertl</aut>
          <vrk><url ref="https://www.monato.be/2008/009378.php">Kinejoj kaj ciferoj: rekonkereto en Hungario</url></vrk>
          <lok>2008</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="vid.antaux0i">anta&ubreve;vidi</ref>,
      <ref cel="auxgur.0i">a&ubreve;guri</ref>,
      <ref cel="profet.0i">profeti</ref>
    </refgrp>
  </snc>
  <trdgrp lng="be">
    <trd>&c_p;&c_r;&c_a;&c_d;&c_b;&c_a;&c_ch;&c_y;&c_c;&c_mol;</trd>,
    <trd>&c_u;&c_ja;&c_w;&c_l;&c_ja;&c_c;&c_mol; <klr>(&c_b;&c_u;&c_d;&c_u;&c_ch;&c_y;&c_n;&c_ju;)</klr></trd>
  </trdgrp>
  <trdgrp lng="cs">
    <trd>m&iacute;t vizi</trd>,
    <trd>vid&ecaron;n&iacute;</trd>
  </trdgrp>
  <trdgrp lng="de">
    <trd>in einer <ind>Vision</ind> sehen</trd>,
    <trd>visionieren</trd>
  </trdgrp>
  <trd lng="fr">avoir une <ind>vision</ind></trd>
  <trdgrp lng="hu">
    <trd>l&aacute;tom&aacute;sa van</trd>,
    <trd>vizion&aacute;l</trd>
  </trdgrp>
  <trdgrp lng="ja">
    <trd>&#x5E7B;&#x306B;&#x898B;&#x308B;  <pr>&#x307E;&#x307C;&#x308D;&#x3057;&#x306B;&#x307F;&#x308B;</pr></trd>,
    <trd>&#x5E7B;&#x8996;&#x3059;&#x308B;  <pr>&#x307E;&#x307C;&#x308D;&#x3057;&#x3057;&#x3059;&#x308B;</pr></trd>
  </trdgrp>
  <trd lng="nl">een <ind>visioen</ind> hebben</trd>
  <trdgrp lng="ru">
    <trd>&c_p;&c_r;&c_o;&c_v;&c_i;&c_d;&c_je;&c_t;&c_mol;</trd>,
    <trd>&c_i;&c_m;&c_je;&c_t;&c_mol; <ind>&c_v;&c_i;&c_d;&c_Je;&c_n;&c_i;&c_je;</ind></trd>
  </trdgrp>
  <trdgrp lng="sk">
    <trd>ma&tcaron; zjavenie <klr>(n&aacute;b.)</klr></trd>,
    <trd>vidie&tcaron; prelud</trd>,
    <trd>vidinu</trd>
  </trdgrp>
</drv>

<drv mrk="vizi.0ulo">
  <kap><tld/>ulo, <var><kap><tld/>isto</kap></var></kap>
  <snc mrk="vizi.0ulo.auxguristo">
    <dif>
      Iu, kiu a&ubreve;guras per <tld/>oj:
      <ekz>
        la Eternulo parolis al la profeto <nom>Gad</nom>, la viziist<tld/>o de <nom>David</nom>
        <fnt>
          <bib>MT</bib>
          <lok>II. Samuel 24:11</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="auxgur.0isto">a&ubreve;guristo</ref>,
      <ref cel="profet.0o">profeto</ref>
    </refgrp>
    <trd lng="de">Seher</trd>
  </snc>
  <snc mrk="vizi.0ulo.KOMUNE">
    <dif>
      Homo kun originalaj ideoj kaj revoj pri la estonteco:
      <ekz>
        en politiko la <tld/>uloj estas e&ccirc; pli dan&gcirc;eraj ol la friponoj;
      </ekz>
      <ekz>
        neniu a&ubreve;skultas lin <klr>[&#x2026;]</klr> li estas <tld/>ulo a&ubreve; folulo
        <fnt>
          <bib>Monato</bib>
          <aut>Roberto Pigro</aut>
          <vrk><url ref="https://www.monato.be/2013/010777.php">&Gcirc;is la tero tremas</url></vrk>
          <lok>2013</lok>
        </fnt>;
      </ekz>
      <ekz>
        mi nun faras mallongan portretan filmon <klr>[&#x2026;]</klr> pri la
        desegnisto/<tld/>ulo <nom>Buckminster Fuller</nom>
        <fnt>
          <bib>Kon11</bib>
          <lok>Intervjuo</lok>
        </fnt>.
      </ekz>
    </dif>
    <refgrp tip="vid">
      <ref cel="pionir.0o.FIG">pioniro<sncref/></ref>,
      <ref cel="utopi.0isto">utopiisto</ref>
    </refgrp>
    <trd lng="de">Vision&auml;r</trd>
    <trd lng="el">&omikron;&rho;&alfa;&my;&alfa;&tau;&jota;&sigma;&tau;&eta_ton;&sigma_fina;</trd>
    <trd lng="en">visionary</trd>
    <trd lng="fr">visionnaire<klr> (subst.)</klr></trd>
    <trd lng="hu">l&aacute;tnok</trd>
    <trd lng="nl">ziener</trd>
    <trd lng="pt">vision&aacute;rio</trd>
    <trdgrp lng="ru">
      <trd>&c_v;&c_i;&c_z;&c_i;&c_o;&c_n;&c_je;&c_r;</trd>,
      <trd>&c_p;&c_r;&c_o;&c_v;&c_i;&c_d;&c_je;&c_c;</trd>,
      <trd>&c_d;&c_u;&c_h;&c_o;&c_v;&c_i;&c_d;&c_je;&c_c;</trd>
    </trdgrp>
    <trd lng="sk">vizion&aacute;r</trd>
    <trdgrp lng="sk">
      <trd>bl&uacute;znivec</trd>,
      <trd>rojko</trd>
    </trdgrp>
    <trd lng="cs">vizion&aacute;&rcaron;</trd>
    <trdgrp lng="de">
      <trd>Vision&auml;r</trd>,
      <trd>Vordenker</trd>
    </trdgrp>
    <trdgrp lng="uk">
      <trd>&c_p;&c_r;&c_o;&c_v;&c_i;&c_d;&c_je;&c_c;&c_mol;</trd>,
      <trd>&c_m;&c_ib;&c_s;&c_t;&c_i;&c_k;</trd>
    </trdgrp>
  </snc>
  <trd lng="be">&c_p;&c_r;&c_a;&c_z;&c_o;&c_r;&c_c;&c_a;</trd>
  <trdgrp lng="ja">
    <trd>&#x5E7B;&#x8996;&#x8005;  <pr>&#x307E;&#x307C;&#x308D;&#x3057;&#x3057;&#x3057;&#x3083;</pr></trd>,
    <trd>&#x898B;&#x795E;&#x8005;  <pr>&#x307F;&#x304B;&#x307F;&#x3057;&#x3083;</pr></trd>
  </trdgrp>
</drv>
</art>
